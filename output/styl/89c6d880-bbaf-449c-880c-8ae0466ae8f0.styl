btn-default-bg-color = var(--theme-base07);
btn-default-text-color = var(--theme-accent);
btn-default-border-color = var(--theme-accent);
btn-default-accent-color = var(--theme-accent);
btn-default-highlight-color = var(--theme-accent);
btn-default-highlight-text-color = var(--theme-base07);

button {
  display: flex;
  align-content: center;
  justify-content: center;
  padding: var(--theme-btn-pad) var(--theme-pad-03);
  font-family: inherit;
  font-weight: bold;
  font-size: var(--theme-button-size);
  line-height: 24px;
  transition: all 150ms ease-in-out;
  user-select: none;
  outline: none;
  border-width: 2px;
  border-style: solid;
  border-radius: 4px;
  cursor: pointer;
  // box-sizing: border-box;
}

.btn {
  color: var(--btn-text-color, btn-default-text-color);
  background-color: var(--btn-bg-color, btn-default-bg-color);
  border-color: var(--btn-bg-color, btn-default-bg-color);

  &:hover {
    background-color: var(--btn-highlight-color, btn-default-highlight-color);
    border-color: var(--btn-highlight-color, btn-default-highlight-color);
    box-shadow: 0 var(--theme-pad-01, 5px) var(--theme-pad-03, 15px) 0 rgba(0,0,0,0.2);
  }

  &:disabled {
    background-color: var(--btn-disabled-color);
    border-color: var(--btn-disabled-color);

    &:hover {
      box-shadow: 0 0 0 0 rgba(0,0,0,0);
      cursor: default;
    }
  }

  &:active {
    background-color: var(--btn-bg-color, btn-default-bg-color);
    border-color: var(--btn-bg-color, btn-default-bg-color);
    box-shadow: 0 0 0 0 rgba(0,0,0,0);
  }
}

.btn-light {
  color: var(--btn-accent-color, btn-default-text-color);
  background-color: var(--btn-text-color, btn-default-text-color);
  border-color: var(--btn-accent-color);

  &:hover {
    color: #EC78FF;
    border-color: #EC78FF;
    box-shadow: 0 var(--theme-pad-01, 5px) var(--theme-pad-03, 15px) 0 rgba(0,0,0,0.1);
  }

  &:active {
    color: var(--btn-accent-color, btn-default-text-color);
    border-color: var(--btn-accent-color);
    box-shadow: 0 0 0 0 rgba(0,0,0,0);
  }
}

textbox-default-background-color = var(--theme-base07);
textbox-default-text-color = var(--theme-base01);
textbox-default-placeholder-color = var(--theme-base02);
textbox-default-border-color = var(--theme-base05);
textbox-default-accent-color = var(--theme-accent);

.textbox {
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: var(--theme-pad-01) var(--theme-textbox-pad);
  background-color: var(--textbox-bg-color, textbox-default-background-color);
  color: var(--textbox-text-color, textbox-default-text-color);
  border-style: solid;
  border-width: 2px;
  border-color: var(--textbox-border-color, textbox-default-border-color);
  border-radius: 4px;
  font-family: inherit;
  font-weight: normal;
  font-size: var(--theme-textbox-size);
  transition: all 150ms ease-in-out;
  outline: 0;
  box-sizing: border-box;

  &::placeholder {
    color: var(--textbox-placeholder-color, textbox-default-placeholder-color);
    opacity: 1;
  }

  &:focus-within {
    border-color: var(--textbox-highlight-color, textbox-default-accent-color);
    box-shadow: 0px var(--theme-pad-01, 5px) var(--theme-pad-03, 15px) 0px rgba(0,0,0,0.2);
  }

  &:disabled {
    background-color: transparent;
  }

  &.err {
    border-color: var(--textbox-error-color);
    box-shadow: 0px var(--theme-pad-01, 5px) var(--theme-pad-03, 15px) 0px rgba(0,0,0,0.2);
  }
}

.card {
  min-width: 300px;
  width: 100%;
  box-sizing: border-box;
  background-color: var(--theme-window-color);
  padding: var(--theme-pad-04);
  border-width: 0;
  border-radius: 4px;
  display: flex;
  flex-flow: column;
  box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.2);
  color: var(--theme-text-color);
  transition: all 150ms ease-in-out;
  outline: 0;

  &:hover {
    box-shadow: 0px 5px 15px 0px rgba(0,0,0,0.2);
    cursor: pointer;
  }

  & .title {
    font-size: var(--theme-size-h3);
    color: var(--theme-text-header-color);
    font-weight: bold;
  }

  & .info {
    font-size: var(--theme-size-larger);
    color: var(--theme-text-info-color);
  }
}


