@import 'styles/fonts';
@import 'styles/container';
@import 'styles/colors';

@lost gutter 24px; // ..
@lost flexbox flex; // ..
default-font = 'Source Han Sans CN', 'Sarasa UI SC', 'Noto Sans', 'San Fransisco', 'Segoe UI', 'Noto Sans CJK SC', 'Noto Sans SC', 'Source Han Sans SC', 'Microsoft Yahei UI', sans-serif;

html {
  min-height: 100vh;
}

body {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  font: var(--theme-font, default-font);
}

app-root {
  display: block;
  min-height: 100vh;
  @extend .root-color-palette;
}

// pad-base: 8px
generate-padding(pad-base) {
  --theme-pad-00: 0px;
  --theme-pad-01: pad-base * 0.5;
  --theme-pad-02: pad-base;
  --theme-pad-03: pad-base * 2;
  --theme-pad-04: pad-base * 3;
  --theme-pad-05: pad-base * 4;
  --theme-pad-06: pad-base * 6;
  --theme-pad-07: pad-base * 8;
  --theme-pad-08: pad-base * 12;
  --theme-pad-09: pad-base * 16;
  --theme-pad-10: pad-base * 32;
  // Container
  --theme-container-pad: pad-base * 3;
  --theme-textbox-pad: pad-base * 1.5;
  --theme-btn-pad: pad-base - 2;
}

// size-base: 12px
generate-font-size(size-base) {
  --theme-size-small: size-base * 0.75;
  --theme-size-base: size-base;
  --theme-size-larger: size-base * 1.25;
  --theme-size-large: size-base * 1.5;
  --theme-size-h4: size-base * 1.5;
  --theme-size-h3: size-base * 2;
  --theme-size-h2: size-base * 2.5;
  --theme-size-h1: size-base * 3;
  --theme-size-jumbotron: size-base * 4.5;
}

.base-theme {
  // Fonts
  --theme-font: 'Source Han Sans CN', 'Sarasa UI SC', 'Noto Sans', 'San Fransisco', 'Segoe UI', 'Microsoft Yahei UI', sans-serif;
  // padding
  // theme-pad-base: 8px
  generate-padding: 8px;
  generate-font-size: 12px;

  --theme-textbox-size: 14px;
  --theme-button-size: 14px;
  // pages
  --theme-page-lg: theme-page-lg;
  --theme-page-md: theme-page-md;
  --theme-page-sm: theme-page-sm;
  --theme-breakpoint-lg: theme-breakpoint-lg;
  --theme-breakpoint-md: theme-breakpoint-md;
  --theme-breakpoint-sm: theme-breakpoint-sm;
}

.base-color-theme {
  --theme-background-color: var(--palette-accent-light);
  --theme-window-color: var(--palette-base00);

  --theme-header-color: var(--palette-accent-dark);
  --theme-info-color: var(--palette-base02);

  --theme-text-header-color: var(--palette-base03);
  --theme-text-info-color: var(--palette-base02);
  --theme-text-color: var(--palette-base04);
  --theme-link-color: var(--palette-accent);
  --theme-link-hover-color: var(--palette-accent-dark);

  --btn-text-color: var(--palette-base00);
  --btn-bg-color: var(--palette-accent-dark);
  --btn-highlight-color: #7d1a96;
  --btn-disabled-color: var(--palette-base01);
  --btn-accent-color: var(--palette-accent);

  --textbox-text-color: var(--palette-base03);
  --textbox-placeholder-color: var(--palette-base01);
  --textbox-bg-color: var(--palette-base00);
  --textbox-border-color: var(--palette-base02);
  --textbox-accent-color: var(--palette-accent-dark);
  --textbox-highlight-color: var(--palette-accent);
  --textbox-error-color: var(--palette-err);
}

p, div, h1, h2, h3, h4, h5, h6, input, textarea, label {
  font-family: var(--theme-font);
  // font-size: var(--theme-size-base);
  font-size: inherit;
  line-height: 150%;
}

h1, h2, h3, h4 {
  color: var(--theme-header-color);
}

h1 {
  font-size: var(--theme-size-h1);
  font-weight: 500;
}

h2 {
  font-size: var(--theme-size-h2);
  font-weight: 500;
}

h3 {
  font-size: var(--theme-size-h3);
  font-weight: 500;
}

h4 {
  font-size: var(--theme-size-h4);
  font-weight: 500;
}


