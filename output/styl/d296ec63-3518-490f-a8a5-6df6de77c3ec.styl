// 下拉输入|选择操作按钮(Select)
.selectselectwrap
    position: relative
    &.ivu-select-visible
        .ivu-select-selection
            box-shadow: none
            .ivu-icon
                color: #3dc1ff
    .ivu-select-dropdown
        top: 31px !important
        margin: 0
        padding: 0
        max-height: none
        border-radius: 0
        box-shadow: none
        border: 1px solid #3dc1ff
        position: absolute !important
        .ivu-select-not-found
            li
                padding: 5px 12px
                font-size: 14px
        .ivu-select-dropdown-list
            max-height: 200px
            .ivu-select-item
                padding: 5px 12px
                white-space: normal
            .ivu-select-item-selected
                color #7c7c7c
                background-color rgb(239,250,255)
            .listul
                max-height: 200px
                overflow: auto
                .listulchild
                    padding: 0 0 0 26px
                    background: #f9fdfe
            .addnewctm
                height: 32px
                line-height: 32px
                font-size: 12px
                background: #3dc1ff
                color: #fff
                text-align: center
                cursor: pointer
                .tit
                    display: block
                .ivu-input-wrapper
                    display: none
                &.iseditaddnewctm
                    background: transparent
                    .tit
                        display: none
                    .ivu-input-wrapper
                        display: table
                        .ivu-input
                            border: none
                        .ivu-input-group-append
                            border: none
                            background: transparent
                            font-size: 12px
                            color: #fff
                            span
                                background: #3dc1ff
                                padding: 3px 10px
                                border-radius: 11px
    & + .ivu-form-item-error-tip
        height: 26px !important
        line-height: 26px !important
    &:hover + .ivu-form-item-error-tip
        display: none !important
    &.nodelselectselectwrap
        .ivu-icon-ios-close-empty
            display: none

