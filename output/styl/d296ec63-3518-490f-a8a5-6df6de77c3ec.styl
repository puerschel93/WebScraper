    z-index 1100
    display: flex
    justify-content: center
    align-items: center
    .ivu-modal
        top: 0
        margin 0
        .ivu-modal-body
            .modal_tit
                padding: 10px 0px 20px 15px
                font-size 17px
                color: #333
                border-bottom 1px solid #e9eaec
                position: relative
                .icon-can-dacha
                    position absolute
                    top 0
                    right 10px
                    color #6d6d6d
                    font-size 24px
                    cursor pointer
                    &:hover
                        color: #3dc1ff
                .ivu-icon-ios-close-empty
                    float right
                    margin -10px 10px 0 0
                    font-size 35px
                    cursor pointer
                    color #b1c7cf
                span.num
                    font-size: 12px
                    color: #999
                    margin-left: 20px
                    vertical-align: bottom
        .ivu-modal-footer
            border-top none
            padding-bottom 35px
            text-align center
    &.modalwrapv2
        .ivu-modal-footer
            text-align: right
            padding: 0 70px 30px

