.categories
	display block
	&__in
		@extends .in
		padding-top 74px
		padding-bottom 19px
		clearfix()
		+r($d)
			padding-top 504px
		+r($t)
			padding-top 400px
		+r($t-s)
			padding-top 250px
		+r($m-l)
			padding-top 200px
		+r($m)
			padding-top 160px
	&__category
		min-height 513px
		// +r($d-l)
		// 	display none
		&.categories__category_mob
			display none
			// +r($d-l)
			// 	display block
			// 	text-align left
		&.categories__category_mob-active
			display block


	&__row
		clearfix()

	&__content
		width 505px
		width ratio-percentage(505, 1170)
		white-space normal
		+r($d)
			margin auto
			width 60%
			text-align center
		+r($t)
			width auto
	&__content_right
		float right
		+r($d)
			float none
	&__content_left
		float left
		+r($d)
			float none

	&__title
		margin-bottom 13px
		padding-right 70px
		@extends .title
		text-align center
		+r($d)
			padding-right 0
		+r($m)
			font-size 23px
		strong
			display block
			font-family $pfb
			font-size 30px
			color #f26c4f
			+r($m)
				font-size 24px
	&__text
		margin-bottom 26px
		font-size 18px
		line-height 1.2
		text-align center

	&__list
		margin-bottom 22px
		padding-left 23px
		font-size 18px
		+r($d)
			margin auto
			padding-left 0
			width 60%
			text-align left
		+r($t)
			margin-left 30px
			width auto
		+r($m)
			margin-bottom 16px
			margin-left 53px
	&__item
		position relative
		line-height 1.2
		&:before
			vcentery()
			left -23px
			content ""
			width 11px
			height 11px
			background-color #258bcc
			border-radius 50%
	&__duration
		margin-bottom 0
		padding-left 47px
		font-family $pfb
		font-size 18px
		+r($d)
			padding-left 0
		strong
			font-size 24px
	&__price
		margin-bottom 22px
		padding-left 13px
		font-family $pfb
		font-size 30px
		line-height 1.2
		color #f26c4f
		+r($d)
			padding-left 0
		+r($m)
			margin-bottom 12px
			font-size 26px
	&__cta
		position relative
		z-index 2
		margin-right 33px
		margin-left -33px

		font-size 24px
		color #FFF
		text-align center
		p
			margin-bottom 1px
			line-height 1.2
			span
				font-family $pfb
				+r($m)
					margin-bottom 0
					white-space nowrap
			+r($m)
				margin-bottom 0
				line-height 1.4

		+r($d)
			margin-left 15px
			margin-right 15px
		&:after,
		&:before
			position absolute
			z-index 0
			top 16px
			content ""
		&:before
			left -26px
			retinaSprite($badge_left_group)
		&:after
			right -26px
			retinaSprite($badge_right_group)
			+r($m)
				top auto
				bottom -10px

	&__cta-w
		position relative
		background-color #258bcc
		z-index 1
		padding-top 8px
		padding-bottom 10px
		&:after
			position absolute
			content ""
			bottom 0
			+r($d)
				display none


	&__category_b
		background url('../images/content/cat-b-img.jpg') 50% 0 no-repeat
		+r($t)
			background url('../images/content/cat-b-small.jpg') 50% 0 / contain no-repeat
		.categories__in
			+r($m)
				padding-top 156px
