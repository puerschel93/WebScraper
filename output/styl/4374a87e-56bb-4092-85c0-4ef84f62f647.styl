@import "mixins.styl"
@import "variables.styl"
@import "reset.styl"
global-reset()
/* ----------------*/
/*  global styles  */
/* ----------------*/
html
  body
    font-size: 62.5%
    font-family 'Lato', sans-serif
    line-height 1.2
    min-height 100%
    margin: 0
    font-weight 100
    background url('../images/bg.png') repeat;
    color #CCC
a
  text-decoration none
  color white
h1, h2, header
  color #FFF
*, *:before, *:after
  box-sizing border-box


/* ----------------*/
// NAVIGATION FIXE //
/* ----------------*/
header
  position fixed
  height 4.8em
  top 0em
  width 100%
  z-index 100
  font-size 1.5em
  h1
    background #CCC
    color:#000
    padding .5em 0
    text-align center
nav
  position fixed
  top 40%
  left .1em
  border-top: 1px solid #999;
  box-shadow: 1px 1px 5px 0px #999
  ul li
    background white
    border-bottom 1px solid #999
    border-right 1px solid #999
    border-left 1px solid #999
    padding .5em
    font-size 2em
    &#profil
      background profil
    &#experience
      background experience
    &#portfolio
      background portfolio
    &#contact
      background contact
    &.menu
      background #22262e
    a
      color white
      &:hover
        color black
      .txt
        display: inline-block;
        text-indent -9999em

/* ----------------*/
//    CONTENU      //
/* ----------------*/
.wrapper
  position relative
  width 60%
  max-width 996px
  margin 100px auto
  aside
    text-align right
    top -30px
    right 0
    font-size 3em
    margin-bottom .5em
    ul li
      display inline-block
      margin-left .25em
  .container
    position relative
    z-index 0
    width 100%
    background rgba(255, 255, 255, .1)
    border-color black
    border-width 1px 1px 0 1px
    border-style solid
    margin-bottom 100px
    .title
      font-size 3em
      position relative
      height auto
      padding .5em 1.5em
      display inline-block
      text-transform capitalize
      text-shadow 2px 2px 3px #333333
      cursor pointer
      width 100%
      clearfix()
      a
        height 20px
        &:before
          content ''
          width 16px
          height 16px
          display inline-block
          margin-left -30px
          margin-top 8px
          position absolute
          border-top 1px solid #FFF
          border-left 1px solid #FFF
          transform rotate(135deg)
          transition(all 0.25s linear)
        &:hover:before
          transform rotate(225deg)
          transition(all 0.25s linear)
          margin-top 4px
          margin-left -27px
        &:after
          position: absolute;
          display: inline-block;
          content: '';
          width: 0px;
          height: 0px;
          border-style: solid;
          border-width: 22px 0 22px 5px;
          border-color: transparent transparent transparent #cdcdcd;
          margin-left: 30px;
          top: 0px;
          transition all 0.25s linear
        &:hover:after
          border-width: 22px 0 22px 15px;
          transition all 0.25s linear
        span
          margin-right 1em
    section
      font-size 1.5em
      clearfix()
      .civil
        position static
        float left
        width 25%
        padding 1em
        box-sizing border-box
        .box-avatar
          margin-top 1em
          border-radius 10px
          background white
          text-align center
          width 100%
          img
            padding 1.5em
      .content
        box-sizing border-box
        max-height 600px
        transition .5s
        overflow hidden
        box-sizing border-box 
        &:before, &:after
          content ""
          position absolute
          width 0
          height 0
          border-style solid
          border-color transparent
          border-bottom 0
        &:after
          bottom -50px
          left 0px
          border-top-color rgba(255, 255, 255, .1)
          border-width 50px 498px 0 498px
        &:before
          bottom: -50px
          left: 0px
          border-width 50px 498px 0 498px
        &.close
          max-height 0
          padding 0
          &:before, &:after
            content ''
            border 0px
            transition all 0.25s linear
        .main
          padding 1em
          p
            margin-bottom 1em
    
    // CSS PROFIL
    &.profil
      .title
        background profil
        a:after
          border-color: transparent transparent transparent profil;
      .content
        h4
          font-size 1.8em;
        h5
          font-size 1.4em
    
    // CSS EXPERIENCE
    &.experience 
      .title
        background experience
        a:after
          border-color: transparent transparent transparent experience;
      .content
        .formation, .works
          width 50%
          float left
          height 400px
          padding 2em
          box-sizing border-box
          ul li
            margin-bottom 15px
            padding-bottom 15px
            border-bottom 1px solid #c0c0c0
          h4
            font-size 1.8em
            margin-bottom 20px;
            span
              font-size .8em
              float right
          h5
            font-size 1.4em
            margin-bottom 12px;
          p
            font-size 1.2em
            color #c0c0c0
            margin-bottom 6px;
            a
              display block
              text-decoration underline
              &:hover
                text-decoration none
        .skills
          clear both
          ul
            li
              width 70%
              margin 0 auto 10px auto
              label
                width 10%
                margin-right 50px
                text-transform uppercase
                display: inline-block;
              .progress
                display inline-block
                width 60%
                position relative
                .back
                  background rgba(255,255,255,.5)
                  border-radius(10px)
                  height 10px
                .on
                  position absolute
                  border-radius(10px)
                  top 0px
                  height 10px
                  width 50%
              span
                width 10%
                text-align center
                background #808080
                padding 10px
                display inline-block
                border-radius 5px
                margin-left 50px
                position relative
                &:after
                  content ''
                  border-style solid
                  border-width 14px 8px 14px 0
                  border-color transparent #808080 transparent transparent
                  position absolute
                  left -8px
                  top 4px
              &:nth-child(1) .on
                background #f16529
              &:nth-child(2) .on
                background #2aa9e0
              &:nth-child(3) .on
                background #ffda3e
              &:nth-child(4) .on
                background #1c135a
    
    // CSS PORTFOLIO
    &.portfolio .title
      background portfolio
      a:after
        border-color: transparent transparent transparent portfolio;
    
    // CSS CONTACT        
    &.contact 
      .title
        background contact
        a:after
          border-color: transparent transparent transparent contact;
      .content
        clearfix()
        .formulaire
          float left
          width 30%
          p, form
            padding: .5em 1em;
            line-height: 1.2em;
          input, textarea 
            margin 5px 0px 0 0px 
            border-radius: 2px;
            padding: .75em 1.35em;
            border 0
            width 95%
            set-placeholder-style(text-transform, uppercase)
            set-placeholder-style(color, #666)
            set-placeholder-style(font-weight, bold)
            set-placeholder-style(text-align, left)
        #map-canvas
          float left
          width 70%
          height 500px
        
    
    

