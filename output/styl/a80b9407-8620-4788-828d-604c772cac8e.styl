// 默认样式
.zyhSettlementStatisticsDataBoardSection {
  margin: 0;
  padding: 0;
  box-sizing: border-box;

  *, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  li {
    list-style-position: inside;
    list-style-type: none;
  }

  .clearfix::after {
    content: '';
    display: block;
    clear: both;
  }

  height: 100%;

  .section1 {
    height: 20%;

    ul {
      height: 100%;
      display: flex;
      align-items: center;

      li {
        width: 33.333%;
        height: 100%;
        display: flex;
        flex-direction: column;

        .top {
          height: 30%;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: flex-end;
          font-size: 12px;
          font-family: PingFang SC;
          font-weight: 400;
          color: #100F0F;
        }

        .bottom {
          height: 70%;
          display: flex;
          justify-content: space-around;

          div.p1 {
            width: 50%;
            display: flex;
            flex-direction: column;

            span:nth-child(1) {
              text-align: center;
              height: 50%;
              font-size: 30px;
              font-family: PingFang SC;
              font-weight: bold;
              color: #2754FB;
            }

            span:nth-child(2) {
              margin: 0 auto;
              width: 50px;
              text-align: center;
              border-radius: 9px;
              font-size: 12px;
              font-family: PingFang SC;
              font-weight: 400;
              background: #2c6af5;
              color: #FBF6F6;
              line-height: 1;
              padding: 2px;
            }
          }

          div.p2 {
            width: 50%;
            display: flex;
            flex-direction: column;
            position: relative;

            div:not(.noBorder)::after {
              content: '';
              position: absolute;
              height: 40px;
              right: 0;
              border-right: 1px solid #848FB7;
            }

            div {
              height: 50%;
              text-align: center;

              span:nth-child(1) {
                font-size: 30px;
                font-family: PingFang SC;
                font-weight: bold;
                color: #FB6D27;
              }

              span:nth-child(2) {
                font-size: 12px;
                font-family: PingFang SC;
                font-weight: bold;
                color: #FB6D27;
                margin-left: -3px;
              }
            }

            span.amount {
              margin: 0 auto;
              width: 50px;
              text-align: center;
              border-radius: 9px;
              font-size: 12px;
              font-family: PingFang SC;
              font-weight: 400;
              background: #2c6af5;
              color: #FBF6F6;
              line-height: 1;
              padding: 2px;
            }
          }
        }
      }
    }
  }

  .section2 {
    height: 75%;
    position: relative;

    .section2Top {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      display: flex;

      .left {
        margin-left: 42px;
        display: flex;

        span:nth-child(1) {
          width: 5px;
          height: 20px;
          border-radius: 5px;
          background: #2858f2;
          margin-right: 5px;
        }

        span:nth-child(2) {
          font-size: 14px;
          font-family: PingFang SC;
          font-weight: normal;
          color: #000000;
        }
      }

      .medial {
        flex-grow: 1;
        display: flex;
        justify-content: flex-end;

        .medialWrapper {
          display: flex;
          border: 1px solid #2754FB;
          border-radius: 5px;

          span {
            padding: 7px 20px;
            font-size: 16px;
            font-family: PingFang SC;
            font-weight: normal;
            color: #2754FB;
          }

          span.currentActive {
            background: #2858f2;
            color: #fff;
            border-radius: 5px;
          }
        }
      }

      .right {
        // border: 1px solid green;
        margin: 0 50px 0 10px;

        .block {
          border: 1px solid #2754FB;
          color: #2754FB;
          border-radius: 5px;
        }
      }
    }

    #settlementStatisticsEchart1 {
      height: 100%;
      width: 100%;
    }

    .section2Bottom {
      position: absolute;
      left: 0;
      top: 0;
    }
  }

  .gap2 {
    height: 5%;
  }
}