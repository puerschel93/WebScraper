*,
*::after,
*::before 
  padding 0
  margin 0
  box-sizing border-box

body 
  font-family 'Inter', sans-serif
  background white

header 
  display flex
  align-items center
  justify-content space-around
  position fixed
  width 100%
  padding 1.3rem
  box-shadow 2px 0px 5px rgba(0, 0, 0, 0.05)
  background #FFF

  .location
    font-size 0.9rem
    display flex
    flex-direction column
    align-items center

  .locationPicked
    display flex
    align-items center
    cursor pointer

    span
      color #cc0000
      cursor pointer
      margin-right 5px

main
  background #F0F0F0
  width 100%
  height 100vh
  display flex
  justify-content space-around
  align-items center
  .imagesCar 
    background white
    width 50%
    height 60%
    border-radius 10px
    display flex
    justify-content center
    align-items center
    flex-direction column
  .detailsCar
    width 30%
    height 60%
    border-radius 10px
    display flex
    justify-content  space-between
    align-items center
    flex-direction column
  .listCarVersions 
    background #FFF
    display flex
    align-items center
    justify-content space-between
    width 100%
    border-radius 10px
    padding 2rem
    height 110px
    box-shadow 2px 0px 5px rgba(0, 0, 0, 0.05)
    position relative

    &:after
      content 'Versões'
      position absolute
      left 20px
      top 12px
      font-size 1.1rem
      font-weight 600
      font-family 'Lexend', sans-serif
      color #5B5B5B

    a
      text-decoration none
      color #3F3F3F
      transition all 0.2s ease
      
      &:hover
        color #CC0000
        font-weight bold
        border-bottom 2px solid #CC0000

  .infoColors 
    @extends .listCarVersions
    justify-content center
    position relative

    &:after
      content 'Cores Disponíveis'

    p
      text-align center
      color #5C5C5C
      font-size 0.9rem

    .listColors
      display flex

      .colors-hex
        width 30px
        height 30px
        border-radius 50%
        margin-right 10px 
        cursor pointer
        box-shadow inset 0 1px 8px #0000004a

    .nameColorSelected
      font-size 0.8rem
      color #5c5c5c
      position absolute
      bottom 14px

  .infoPrice
    @extends .infoColors
    flex-direction column
    justify-content center
    height 130px

    &:after
      content 'CVT'
  
    span
      display flex
      align-items center
      font-size 0.9rem
      color #5c5c5c
      text-align center

    p
      color #cc0000
      margin-left 5px
      font-weight bold
      font-size 1.2rem
    
    button
      border none
      border-radius 10px
      background #CC0000
      color #FFF
      font-family 'Lexend', sans-serif
      position relative
      height 35px
      width 60%
      align-items center
      display flex
      left 80px
      bottom -20px
      justify-content center
      cursor pointer
      transition all 0.2 ease

      &:hover
        background #B20303

.modal-state
  background #06060699
  width 100%
  height 100vh
  display none
  align-items center
  justify-content center
  flex-direction column
  position absolute
  top 0
  &.active
    display flex

  .modal-container
    display flex
    justify-content center
    flex-direction column
    align-items center
    width 30%
    height 50vh
    background white
    border-radius 20px
    text-align center
    padding 1rem
    position relative

    .modal-title h3
      font-weight 300
      font-size 1.1rem
    h2
      font-size 1.4rem
      margin-bottom 1.5rem

  .modal-description
    color #525252
    font-size 0.9rem
    max-width 300px

  .modal-search
    display flex
    flex-direction column
    padding 1rem
    width 60%
    margin-top 0.5rem

    select
      padding 0.5rem
      border-radius 5px
      margin-bottom 1rem

    button 
      background #cc0000
      padding 0.5rem
      border-radius 5px
      border none
      color white
      cursor pointer
      transition background-color 0.4s ease
      &:hover
        background #B20303

.listCars 
  background #FFF
  width 95%
  border-radius 10px
  position absolute
  display flex
  justify-content space-between

  &:after
    content 'Carros Disponíveis'
    position absolute
    left 20px
    top 12px
    font-size 1.1rem
    font-weight 600
    font-family 'Lexend', sans-serif
    color #5B5B5B

  .carsAvailable
    background #FCFCFC
    border-radius 10px
    border 1px solid #F7F7F7
    width 10%
    height 100px
    margin 1rem
    display flex
    flex-direction column
    align-items center
    justify-content center
    position relative
    bottom -50px
    left 0px
    padding 5rem
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.05);
    cursor pointer
    transition transform 0.3s ease-in-out

    &:hover
      background-color #F3F3F3
      transform translateY(-8px)

    .img-preview-car
      width 140px
      margin-bottom 0.5rem