@media only screen and (min-width: 320px) and (max-width:768px) {

* {
  font-family: 'Source Sans Pro', sans-serif;
}

.header-search__icon{
  display none
}

.afishaIndex{
  margin-top: 100px
}

.afishaIndex__item__foto__img{
  width: 100%
}

.articleIndex {
  margin-top: 80px;
}

.index__header__form__search__input{
  width: 88%;
  border: none;
  border-radius: 0;
  border-bottom: 1px solid #febf14;
  background: none;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 400;
  font-size: 14px;
}

.slick-dots{
  top: 250px
}

.index__header__form__search__btn__img{
  width 30px
}

.index__header__form__search__btn{
  border: none;
  outline: none;
  background: none;
  width: 10%;
  padding: 0;
  margin: 0;
}

.index__header__form__search__input::placeholder{
  color #febf14
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 400;
  font-size: 14px;
}


.bigNewsBlock__title__a {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight 700
  line-height 22px
  font-size 18px
}

.bigNewsBlock__title {
  line-height 0
}

.bigNews__category__link>a, .smallNews__category__link {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 400;
  font-size: 12px;
}

.bigNewsBlockDesc {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 400;
  font-size: 14px;
  line-height: 1.43em;
}

.bigNews2{
  height: 320px;
}

.newsName, .articleName {
  font-weight 600
  font-size 22px
}

.newsName{
  margin-top 10px
}

.index__header__form__search{
  margin-top 30px
  display block
}

.count__index__category__link {
  font-weight 500
}

.mainEntityOfPage {
  font-size 18px
}

.articlePage__left__content__item__desc {
  font-family: 'Source Sans Pro', sans-serif;
  font-size 14px
  color #000
  font-weight: 400;
}

.article__postCategories{
  padding 10px
}

.reclam__mobile__blog {
  display block
  width 100%
  margin-top 15px
}

.bigNews__a{
  padding-bottom: 200px;
}
.smallNews__a{
  padding-bottom: 40px;
  height: 320px;
  font-size 18px
}
.mainPage-content-news{
    min-height: 400px;
    height: auto;
}
.mainPage-content-banner{
    position: relative;
    display:none;
    z-index: 2;
    margin-top:70px;
}
.mainPage-content-left{
    position: relative;
    height: 100%;
    width: 100%;
    top: 80px;
}
.bigNews{
    height: 320px;
    padding: 5px 0 0 15px;
    margin: 0 0 15px 0;
}
.bigNews__linear__gradient {
    background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 25%, rgba(0, 0, 0, 0.91) 88%, rgb(0, 0, 0) 100%);
}

.bigNewsBlockName a{
    font-size:20px;
    font-weight: bold;
    color: #F8F4F3;
}
.smallNewsBlockName{
    font-size:20px;
    font-weight: bold;
    color: #F8F4F3;
    padding-right:15px;
    padding-left:15px;
    padding-bottom: 15px;
}
.smallNews{
    background: url('../../img/block2.png') center center no-repeat;
    background-size: 100% 100%;
    height: 340px;
    margin: 15px 0 5px 0;
    padding: 5px 0 5px 0;
}
.smallNews:first-child{
    margin-top: 0px;
}
.smallNews:last-child{
    padding-top:0;
    margin-bottom: 0px;
}
.mainPage-content-right{
    display: flex;
    flex-direction: column;
    right: 0;
    top: 0;
    height: auto;
    margin-top: 30px;
}
.mainPage-content-right-RghtMenu{
      margin-top: 0;
}
.mainPage-content-right-RghtMenu li a{
    width:80%;
    margin:0;
}
.articleContainer{
    flex-direction: column;
    width:100%;
}
.article{
    width: auto;
    height: auto;
    margin: 10px 0 0 0;
}
.article-imgDiv img{
    width:100%;
    height: 300px;
}

.loadMore__href{
    width:auto;
    height: 40px;
    align-items: center;
    text-align: center;
    margin-left: 0;
    justify-content: center;
}
.reklamaBlock-img{
    width:100%;
}
.footer-right-name{
  width: 270px;
}
.footer__contact{
  padding-bottom: 10px;
  width: 50%;
}
.footer__map{
  width: 50%;
}
.bottom-footer-desc{
  text-align: center;
}
}

