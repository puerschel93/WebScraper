.btn, button
    display inline-block
    cursor pointer
    background #57BC90
    color #FFF
    text-decoration none
    text-transform uppercase
    padding 5px 15px
    border-radius 1px
    font-weight 800

    trans()
    &:hover
        background @background - 20
        border-color @background

    &.btn-primary
        background #57BC90
        border-color teal
        color dark-purp
        &:hover
            background @background - 40
            border-color @background
    &.btn-deny
        background red
        border solid 3px @background
        &:hover
            background @background - 20
            border-color @background
    &.btn-text
        color purp
        background transparent
        border solid 2px purp

        &:hover
            background teal
            border-color @background

    &.btn-text-dark
        color #FFF
        background transparent
        border solid 2px #FFF

        &:hover
            background #FFF
            color dark-purp
            border-color @background

    &.btn-confirmation
        color black
        background green
        border solid 2px @background
        &:hover
            background @background - 20
            border-color dark-purp
    &.btn-cancel
        color #FFF
        background transparent
        border solid 2px #FFF
        opacity 0.4

        &:hover
            background red
            color #FFF
            opacity 1

            border-color @background

