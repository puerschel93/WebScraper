.b-ideas
    margin-top 70px

    @media all and (max-width 639px)
        margin-top 0

    &__item 
        margin-top 80px
        display flex 
        &:first-child 
            margin-top 0
        @media all and (max-width 820px)
            flex-direction column 
            align-items center
    .white-back 
        padding 67px 80px 110px 66px
    &__item-img 
        position relative 
        z-index 3
        flex 0 0 238px
        max-width 238px 
        width 238px
        height 370px
        margin-right 54px
        margin-top 4px
        @media all and (max-width 820px)
            flex 1 1 auto
            margin-right 0
        img 
            position absolute
            z-index 5
        &:before 
            content ""
            position absolute 
            top 0 
            right 0 
            width 158px
            height 144px
            z-index 2
            background-color #c7efea
            border-radius 17px 
        &:after
            content ""
            position absolute 
            bottom 0 
            left 0 
            width 158px
            height 144px
            z-index 2
            background-color #c7efea
            border-radius 17px 
    &__item-title
        padding-top 27px 
        color #13232a
        font-family : $fonts.headings
        font-size 43px
        font-weight 300
        line-height 50px
        @media all and (max-width 425px)
            line-height 38px 
            font-size 32px
    &__item-text 
        padding-top 25px
        padding-left 6px
        color #333333
        font-family : $fonts.base
        font-size 14px
        font-weight 600
        line-height 25px
        letter-spacing 0.9px

        @media all and (max-width 480px)
            padding-top 10px
    &__main-area 
        display none
    &__area-title
        padding-top 36px
        padding-bottom 25px 
        color #13232a
        font-family : $fonts.headings
        font-size 43px
        font-weight 300
        line-height 50px
        letter-spacing -1.6px

        @media all and (max-width 480px)
            padding-top 20px
            padding-bottom 0

        @media all and (max-width 425px)
            line-height 38px 
            font-size 32px
    &__area-items
        display flex 
        justify-content space-between
        flex-wrap wrap
        margin-left -15px
        @media all and (max-width 425px)
            margin-left -5px

        @media all and (max-width 348px)
            justify-content center
            margin-left -20px
            
    &__area-item-title 
        color #008ed7
        font-size 14px
        font-weight 400
        text-decoration underline
        font-family : $fonts.base
        letter-spacing 0.16px
        text-align center
        text-decoration underline 
        transition all 0.3s ease
    &__area-item-img 
        position relative 
        &:before 
            content ""
            position absolute 
            top 0 
            right 0 
            width 61px
            height 57px
            z-index 2
            background-color #c7efea
            border-radius 16px 
            transition all 0.3s ease
        img 
            position relative
            z-index 4
    &__area-item 
        margin-left 15px
        margin-top 15px
        height 110px
        max-width 93px 
        width 100%
        display flex 
        flex-direction column 
        align-items space-between 
        justify-content space-between
        color #008ed7
        @media all and (max-width 425px)
            margin-left 5px

        @media all and (max-width 348px)
            margin-left 20px

        &:hover 
            span 
                text-decoration-color #fff
                color #333333
                &:before 
                    background-color #57d0c8
    &__author
        padding-top 55px 

        @media all and (max-width 480px)
            padding-top 30px

    &__author-item 
        padding-top 22px
        display flex
        &:first-child 
            padding-top 0
        a 
            color #008ed7
            font-family : $fonts.base
            font-size 18px
            font-weight 600
            line-height 25px
            text-decoration underline
            letter-spacing 0.36px
            &:hover 
                text-decoration none
        div
            margin-left 44px
            line-height 25px
            color #333333
            font-family : $fonts.base
            font-size 14px
            font-weight 400
            letter-spacing 0.28px
            @media all and (max-width 750px)
                margin-left 0
                margin-top 7px
            span        
                color #5b5b5b
                font-family : $fonts.base
                font-size 14px
                font-style italic
        @media all and (max-width 750px)
            flex-direction column
                