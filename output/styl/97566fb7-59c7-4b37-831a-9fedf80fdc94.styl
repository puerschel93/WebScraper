.youtube
	padding-top 70rem
	padding-bottom 165rem
	@media $mobile
		padding-top 0
		padding-bottom 70rem

	&__title
		margin 0
		font-weight 400
		font-size 30rem
		line-height 41rem
		color var(--textColor)

	&__descr
		margin 0 0 60rem
		font-weight 400
		font-size 20rem
		line-height 27rem
		color var(--textColor)

	&__link
		color var(--colorActive)

	&__list
		grid-template-rows repeat(2, 292rem)
		display grid
		grid-template-columns repeat(12, 1fr)
		gap 38rem

		@media $mobile
			grid-template-rows repeat(2, 180rem)
			grid-template-columns: repeat(4, 1fr)
			gap 30rem

	&__video
		height 100%
		width 100%

	&__item
		opacity 0
		transform translateY(100%)
		transition opacity .4s ease-in-out , transform .4s ease-in-out
		&:active .youtube__item-title
			color var(--linkColor)

		&:first-child
			transition-delay .25s
			grid-column span 8
			grid-row span 2
			@media $mobile
				grid-row span 2
				grid-column span 4

			&:hover .youtube__item-link
				background-color $i-bgc-1


		&:nth-child(2)
			transition-delay .5s
			grid-column span 4
			@media $mobile
				grid-row span 2
				grid-column span 4

			&:hover .youtube__item-post
				background-color $i-bgc-2

		&:last-child
			transition-delay .75s
			grid-column span 4
			@media $mobile
				grid-row span 2
				grid-column span 4

			&:hover .youtube__item-post
				background-color $i-bgc-3


		&-link
			position relative
			display flex
			flex-direction column
			color var(--textColor)
			transition color .3s ease-in-out
			width 100%
			height 100%


			&--main
				justify-content flex-end
				color var(--textColor)
				background-color #3f434a
				transition background-color .3s ease-in-out

				&:after
					margin-top 90rem


		&-svg
			display block
			width 100%
			height 100%
			object-fit cover
			pointer-events none

			&--main
				transform translate(-50%, -50%)
				position absolute
				left 50%
				top 50%
				z-index 1

				width 50%
				height 50%
				@media $mobile
					width 100%
					height 100%


		&-text
			position relative
			z-index 5
			padding 20rem 30rem 50rem
			width 100%
			background-color #2a2c30
			@media $mobile
				padding 20rem

		&-descr
			display inline-block
			margin-bottom 5rem
			font-weight 400
			font-size 12rem
			line-height 160%
			color var(--textColor)

			&--main
				display inline-block
				margin-bottom 5rem
				font-weight 400
				font-size 12rem
				line-height 160%
				color #8c8c8c

		&-title
			margin 0
			padding-right 20rem
			font-weight 400
			font-size 20rem
			line-height 130%
			@media $mobile
				padding-right 0

			&--main
				margin 0
				font-weight 400
				font-size 30rem
				line-height 130%
				color var(--textColor)

		&-post
			display flex
			margin-bottom 13rem
			width 100%
			height 205rem
			background-color #3f434a
			transition background-color .3s ease-in-out
			position relative
