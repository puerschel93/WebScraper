.ight--side
    max-width: 265px
    width 100%

.img__post 
    max-height: 260px;
    height: 100%;
    overflow: hidden;
    -webkit-transition: all 150ms ease-in-out;
    transition: all 150ms ease-in-out;
    max-width: 100%;
    width: 100%;
    text-align: center;
    padding: 20px;


  
    img 
        max-height: 100%
 

.post__itens 
    padding: 20px;
    max-width: 100%;
    width: 100%;
    background: #fff;
    
 
    a 
        &:hover
            text-decoration: none
            .title__post
                color: #49140d

    .title__post 
        max-width: 100%
        color: #424040
        font-size: 16px
        text-align: center

        &:hover 
            color: #49140d

    .author__post 
        font-size: 13px
        color: #777575
        font-weight: 700
        margin-top: 5px
        padding-bottom: 10px

        &:after
            content: ''
            height: 1px
            width: 80px
            position: absolute
            background: #00b8b559
            display: block
            margin-top: 5px

    .desc__post 
        font-size: 11px
        color: #424040
        margin: 10px 0
        text-align: center

        a 
            color: #49140d  
        h1 
            font-size: 0.6875rem;

        &:hover 
            color: #49140d!important

.tags__post 
    ul 
        display: flex
        flex-wrap: wrap
        justify-content: center

        li
            color: #30c877
            background: #e8f8ef
            padding: 2px 5px
            border-radius: 3px
            margin-right: 10px
            margin-bottom 10px
            text-align: center;

            @media(max-width: 320px)
                margin-right 0
            &:hover
                opacity: 0.8
                
            a  
                text-decoration: none 
                color: #30c877
                font-weight: 700
                text-transform: uppercase
                font-size: 11px

            &:nth-child(2n+2)
                color: #bd4bf6
                background: #eedcf7 

                &:hover
                    opacity: 0.8

                a  
                    text-decoration: none 
                    color: #bd4bf6
                    font-weight: 700

                    

