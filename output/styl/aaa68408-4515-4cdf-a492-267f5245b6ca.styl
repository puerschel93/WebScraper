.pagination 
    display: flex
    justify-content: center
    width: 100%
    flex-wrap: wrap
    margin-top 30px

    span, a
        width 40px
        height 40px
        border-radius: 3px
        background: #49140d
        color: #fff
        margin: 0 5px
        font-weight: 700
