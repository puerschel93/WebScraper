    display: flex
    flex-wrap: wrap
    margin-bottom: 40px 
    width 32%
    box-shadow: 2.121px 2.121px 14px 0px rgba(0,0,0,0.08)
    border-radius: 3px
    padding-bottom 20px

    @media(max-width: 992px) 
        .img__post, .post__itens 
            margin: 0 auto

    @media(max-width: 767px)
        width 49%

    @media(max-width: 425px)
        width 100%

