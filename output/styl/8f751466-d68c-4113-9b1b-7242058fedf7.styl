#main
	padding 0 0 120px
	overflow hidden
	@media screen and (max-width 991px)
		padding 0 0 60px
		text-align center
	@media screen and (max-width 386px)
		padding 0 0 40px
.main
	&-title
		font-size: 24px
		font-weight: bold
		color #743F3F
		margin 80px 0 10px
		@media screen and (max-width 1199px)
			margin-top: 15px
		@media screen and (max-width 386px)
			font-size: 22px
	&-subtitle
		font-size: 18px
		margin-bottom: 35px
		@media screen and (max-width 386px)
			margin-bottom: 20px
	&-info
		position absolute
		bottom: -203px
		left 0
		@media screen and (max-width 991px)
			position: static
		@media screen and (max-width 386px)
			margin-bottom: 30px
		&-text
			text-align left
			display inline-block
			padding 15px 0 30px
			position relative
			font-size: 22px
			color #747474
			@media screen and (max-width 560px)
				font-size: 20px
			@media screen and (max-width 386px)
				display block
				text-align center
			span
				display block
				color #464646
				&.main-date-time
					position absolute
					font-size: 12px
					color #A7A7A7
					bottom: 10px
					left 0
					@media screen and (max-width 386px)
						margin 0 auto
						left 0
						right 0
			&:last-of-type
				margin-left: 108px
				&:before
					content: ''
					display block
					position absolute
					height 100%
					width 1px
					background-color: #747474
					top 0
					left -54px
				@media screen and (max-width 386px)
					margin 31px 0 0
					&:before
						width 100%
						max-width 200px
						height 1px
						top -15px
						left 0
						right 0
						margin 0 auto
	&-img
		display block
		width 100%
		max-width 404px
		margin 0 auto
.form-main
	width 100%
	max-width 535px
	@media screen and (max-width 991px)
		margin 0 auto 50px
.input
	background-color: #fff
	border 2px solid #A4A4A4
	border-radius 0
	font-size: 14px
	font-weight: 100
	color #A4A4A4
	padding 22.7px 30px
	display inline-block
	width 100%
	min-width 229px
	max-width 300px
	@media screen and (max-width 386px)
		min-width 1px
	&-mail-main
		float: left
		margin-right: 15px

		@media screen and (max-width 991px)
			display block
			width 100%
			max-width 380px
			margin 0 auto 20px
			float: none
.button-form-main
	float: left 
	@media screen and (max-width 991px)
		float: none
		display block
		width 100%
		max-width 380px
		margin 0 auto
@-webkit-keyframes autofill
	to
		font-size: 14px
		color: #A4A4A4
		background-color: #fff
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.alert-message
	clear both
	display: none;
	font-weight: bold
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	line-height: 1
	margin-bottom: -10px
.checking
	display: table;
	width 100%
	max-width 515px
	margin: 15px auto 0
	text-align: left
.checking-main
	margin-left: 0
	@media screen and (max-width 991px)
		max-width 380px
		margin-left: auto
	@media screen and (max-width 560px)
		margin 10px auto 0
.checking .check-label
	line-height: 24px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 28px;
	text-align: left;
	font-size: 14px
	color #000
	@media screen and (max-width 1199px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed transparent
	color #000
	&:focus
		border-bottom: 1px dashed transparent
		color #000
	&:hover
		border-bottom-color: #000
		text-decoration: none
		color #000
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .42)
	100%
		box-shadow: 0 0 7px 7px rgba(red, .42)
.checking .check-label:before
	content: '';
	background-color: red
	position: absolute;
	left: 0;
	top: 3px;
	width: 17px;
	height: 17px;
	border: 1px solid red
	border-radius: 5px
	animation: pulse
	animation-duration: 1s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 5px;
	top: -10px;
	width: 7px;
	height: 12px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 1px solid #fff
	border-right: 1px solid #fff
	transform: rotate(41deg);
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: #743f3f
	animation: none
	border: 1px solid #9C9C9C;
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	transition: all 0.5s ease;
::-webkit-input-placeholder
::-moz-placeholder
:-moz-placeholder
:-ms-input-placeholder
	color:#A4A4A4;
	opacity:1;