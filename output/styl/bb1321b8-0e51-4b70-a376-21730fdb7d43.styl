.detail_container
  width 100vw
  padding 1vw 0
  .player_info
    width 100%
    border-bottom 1px solid #f1f1f1
    padding-bottom 3vw
    .top_info
      width 100%
      display flex
      padding  3vw
      box-sizing border-box
      .hot
        // width 10vw
        position absolute
        height 5.333vw
        line-height 5.333vw
        background #f4f4f4
        border-radius 3.2vw
        padding  0.3vw 1.6vw
        img 
          width 3.2vw
          height 3.8vw
          margin-top .4vw
        span 
          font-size 3vw 
          color #fb7299
          margin-left  .8vw
      .title    
        width 70%
        font-size 4vw
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        padding-left 15vw
        margin-top .3vw
        color #212121
      .spreadTitle
        width 70%
        font-size 4vw
        padding-left 15vw
        margin-top .3vw
        color #212121
      .iconDown
        width 4vw
        height 3.2vw  
        position absolute  
        right 5vw
        transition all .3s
      .spreadClass
        transform rotate(180deg) 
        transition all .3s
  .video_tool
    display flex
    padding 0 4vw
    box-sizing border-box
    .author
      display flex
      .avatar
        width 5vw
        height 5vw
        border-radius 50%
      .author_name
        font-size 3.2vw 
        color #212121
        margin .1vw  0 0 1.3vw
    .tool    
      width 17vw
      margin-left 5vw
      display flex
      img
        width 5vw
        height 5vw
      span 
        width 10vw
        display inline-block
        white-space nowrap
        font-size 3vw
        color #555  
        margin .5vw .6vw
  .detail_info
    width 100%
    padding 0 4vw
    box-sizing border-box
    .author
      display flex
      .avatar
        width 10vw
        height 10vw
        border-radius 50%
      .author_name
        font-size 3.8vw 
        color #212121
        margin .1vw  0 0 2.3vw
      .fans
        font-size 3.2vw  
        color #999
        margin .4vw 0 0 2.3vw
      .payAttention
        border 1px solid #fb7299
        border-radius 5px
        font-size 4vw
        color #fb7299
        width 16vw
        height 6vw
        line-height 6vw
        text-align center
        position absolute
        right 5vw
    .viewInfo
      display flex
      color #999999
      font-size 2.8vw
      margin 3vw 0 0 -2vw   
      span
        margin-left 4vw
    .banInfo
      display flex
      margin-top 4vw
      img 
        width 3.6vw
        height 3.6vw
      span  
        font-size 3vw
        color #999999
        margin -.3vw 0 0 2vw
    .authorSay
      font-size 3vw  
      color #999999  
      margin-top 2vw
    .left_info
      display flex  
      margin 2vw 0 0 -5vw
      .tool    
        width 16vw
        margin-left 5vw
        display flex
        img
          width 5vw
          height 5vw
        span 
          font-size 3vw
          color #555  
          margin .5vw .6vw
          white-space nowrap
  .recommendList        
    .listBar
      width 100%
      display flex
      div
        width 50%
        text-align center
        height 13vw
        line-height 13vw
        font-size 4vw
        color #505050
        span
          display inline-block
          text-align center
          width 18vw
          height 6vw
          text-align center
          line-height 6vw
          padding-bottom 2vw
        .selected  
          border-bottom 2px solid #fb7299
          color #fb7299   
    .listContainer
      position absolute
      width 100%
      display flex
      flex-wrap wrap   
      box-sizing border-box
      padding 1vw 1.5vw
      transition all .3s   
      .listItem
        width 50% 
        height 40vw
        font-size 3.2vw
        padding 2vw 1.5vw
        box-sizing border-box
        img 
          width 100%  
          margin-left 10%
          height 60%
          border-radius 5px
          margin 0 auto
        .itemTitle
          font-size 3.3vw  
          color #212121
          padding 0 0 0 2vw
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical
          overflow hidden
      overflow hidden  
    .commentsSelected
      margin-left -100% 
      transition all .3s   
  .commentsList
    position absolute   
    width 100% 
       




    