@import 'fonts/fonts.styl';
@import 'blocks/colors_type/colors_type.styl';
@import 'blocks/form_elements/form_elements.styl';
@import 'blocks/cards/cards';
@import 'blocks/headers_footers/headers_footers';

@import '../node_modules/ion-rangeslider/css/ion.rangeSlider.css';
@import '../node_modules/air-datepicker/dist/css/datepicker.min.css';
@import '../node_modules/slick-carousel/slick/slick.css';
@import '../node_modules/slick-carousel/slick/slick-theme.css';

/* обнуление стандартных стилей */
*   
    margin: 0
    padding: 0
    list-style-type: none
    text-decoration: none
	
:active, :hover, :focus
    outline: 0
    outline-offset: 0

a
    color: black

button 
  padding: 0
  border: none
  font: inherit
  color: inherit
  background-color: transparent

html
    font-family: 'Montserrat-Regular', sans-serif
    
.display-none
    display: none!important

/* --- Landing page --- */

.landing_wrap
    width 100%
    max-width 1920px
    margin: 0 auto
    height 830px
    background: url(img/landing.png) no-repeat center
    background-size: cover

.landing_content
    max-width 1160px
    margin: 0 auto
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    padding: 0 20px

.landing_wrap .room_search_card__wrap
    margin-top 70px

.landing_text_wrap
    width 100%
    display: flex
    justify-content: flex-end

.landing_text
    margin-top 320px
    max-width 297px
    text-align: right

@media screen and (max-width: 768px) {
    .landing_wrap {
        height auto
    }
    .landing_text {
        margin 150px 0 20px 0    
    }
}

@media screen and (max-width: 550px) {
    .landing_content {
       justify-content: center;  
    }
    .landing_text_wrap {
        justify-content: center
    }
    .landing_text {
        text-align: center    
    }
}

@media screen and (max-width: 450px) {
    .landing_content {
       padding: 0; 
    }
    .landing_text {
        margin 100px 0 20px 0    
    }
}

@media screen and (max-width: 370px) {
    .landing_text {
        margin 70px 0 20px 0    
    }
}


/* --- Sign in page --- */

.sign_in_wrap
    width 100%
    max-width 1920px
    margin: 0 auto
    height 703px
    background: url(img/registr_sign_in_bgr.png) no-repeat center
    background-size: cover

.sign_in_content
    max-width 1160px
    height 100%
    margin: 0 auto
    display: flex
    justify-content: center
    align-items: center
    padding: 0 20px

@media screen and (max-width: 450px) {
    .sign_in_content {
        padding: 0
    }
}

/* --- Registration page --- */

.registration_wrap
    width 100%
    max-width 1920px
    margin: 0 auto
    height 703px
    background: url(img/registr_sign_in_bgr.png) no-repeat center
    background-size: cover;

.registration_content
    max-width 1160px
    height 100%
    margin: 0 auto
    display: flex
    justify-content: center
    align-items: center
    padding: 0 20px


@media screen and (max-width: 450px) {
    .registration_content {
        padding: 0
    }
}

/* --- Search page --- */

.search_room
    width 100%
    margin: 30px auto 0 auto
    max-width 1920px

.search_room_content
    max-width 1160px
    margin: 0 auto
    display: flex
    justify-content: space-between
    padding: 0 20px

.filter_column
    display flex
    flex-wrap: wrap
    width 100%
    height: 100%
    max-width 266px
    align-content: flex-start

.filter_column>div
    margin-top 30px

.filter_column>div:first-child, .filter_column>div:nth-child(2)
    margin-top 0

.filter_column>div:nth-child(3)
    margin-top 20px

.rooms_column
    width 100%
    max-width: 830px
    display flex
    flex-wrap: wrap
    justify-content: space-between
    padding-left: 10px

.rooms_column__title
    width 100%

.rooms_block
    display flex
    flex-wrap: wrap
    justify-content: space-between
    margin-top 20px

.search_room .room_wrap
    margin-bottom 20.5px

.rooms_pagination
    display flex
    width 100%
    justify-content: center
    margin-top 20px

.search_room + .footer_wrap
    margin-top 70px

.rooms_mobile__btn
    display none
    align-content: center
    justify-content: space-between
    width: 100px
    bold()
    margin-top: 20px

.mobile_filter_close
    position: absolute
    left: 265px
    display: none

@media screen and (max-width: 1150px) {
    .filter_column {
        position absolute
        left 20px
        top: 150px
        background: $white
        height 100%
        min-height: 1100px
        z-index 1
        padding 0 20px 0 0
        transition(0.5s)
    }

    .search_room_content {
        justify-content: center    
    }
    
    .rooms_mobile__btn {
        display flex
    }
    
    .mobile_filter_slide {
        left -320px
    }
    
    .mobile_filter_close {
        display block    
    }
}

@media screen and (max-width: 880px) {
    .search_room_content .room_wrap {
        padding: 0 5px
    }

    .rooms_block {
        justify-content: center 
    }

    .rooms_column {
        padding-left: 0    
    }
    
}

@media screen and (max-width: 569px) {
    .filter_column {
        top: 180px
    }
    
}

/* --- Room details --- */

.room_details
    width 100%
    margin: 0 auto

.room_details__photos
    display flex
    margin: 0 auto
    height: 485px
    max-width 1920px
    

.left_column_photo
    width 65%
    height 100%
    display flex
    flex-shrink: 0
    img 
        width 100%
        height 100%

.room_details__info
    max-width: 712px

.room_info__title + .room_details__wrap
    margin-top 20px

.room_info__title + .pie_chart_wrap
    margin-top 20px

.right_column_photo
    display flex
    flex-wrap: wrap
    width 100%
    img 
        height 50%
        width 100%

.room_details_content
    max-width 1160px
    margin: 67px auto 0 auto
    display: flex
    justify-content: space-between
    padding: 0 20px

.room_info_wrap
    margin: 0 auto
    display: flex
    justify-content: space-between

.room_info__title-wrap
    display: flex
    justify-content: space-between
    align-items: baseline
    margin-bottom 20px

.room_info__reviews
    color: $black--50
    padding-right: 10px
    
.room_info__title
    font-size-24()
    bold()

.room_details__reviews
    margin-top 30px

.room_rules_wrap
    margin: 30px auto 70px auto
    display: flex
    justify-content: space-between

.room_rules__right_column, .room_rules__left_column
    max-width 50%

.room_info__text
    margin-top 20px
    line-height: 24px

@media screen and (max-width: 1050px) {
  .room_details_content {
    display: grid
    grid-row-gap: 40px
    margin-top 40px
    grid-template-areas: 
    "booking_card booking_card" "details__info details__info"
    grid-template-columns: 1fr 1fr
    justify-items: center
  }

  .booking_card__wrap {
      grid-area: booking_card;
   }

  .room_details__info {
      grid-area: details__info;
   }

}

@media screen and (max-width: 1000px) {
    .room_details__photos {
        height auto  
    }
}

@media screen and (max-width: 650px) {
    .room_rules_wrap {
        margin: 30px auto 0 auto
    }
    
    .room_info_wrap {
        flex-wrap: wrap
        justify-content: center
    }

    .room_info__left_column, .room_info__right_column {
        padding 0 20px
        margin-bottom 40px
    }

    .room_rules_wrap {
        flex-wrap: wrap
        justify-content: center
    }
    
    .room_rules__right_column, .room_rules__left_column {
        box-sizing: content-box
        width 100%
        max-width 320px
    }

    .room_rules__left_column {
        margin-bottom 40px
    }

    .room_details__reviews {
        width 90%
        margin: auto    
    }
}

@media screen and (max-width: 520px) {
    .room_info__title-wrap {
        flex-wrap: wrap  
    }
}

@media screen and (max-width: 420px) {
    .room_details__reviews {
        width 95% 
    }

    .room_rules_wrap {
        width 95% 
    }

    .room_details_content {
        padding 0  
    }
}