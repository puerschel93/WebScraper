//
// Modal styles
// ---------------------------------------

@import 'nib'
@import 'variables.styl'

.user-modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  z-index: 99999
  .user-modal-container
    background: #28ace8
    -webkit-border-radius: 4px
    border-radius: 4px
    box-shadow: -1px 5px 10px -2px rgba(0,0,0,0.4)
    color: #fff
    position: absolute
    top: 45%
    transform: translateY(-50%)
  &.login
    .user-modal-container
      max-width: 400px
      padding: 0 15px
      margin: 0 auto
      position: relative
      .header
        left: 15px
        position: absolute
        right: 15px
        top: -90px
      a
        outline: none
        cursor: pointer
        text-decoration: none
        &:hover
          color: #204d74
  &.welcome
    .user-modal-container
      padding: 0 40px
      margin: 0 auto
      max-width: 617px
      position: relative
      .item
        background: $brand-primary
        width: 617px
        height: 100%

form
  margin: 0 0 20px
  .form-message
    margin: 7px 0
    font-size: 12px
.slick-slider
  margin-bottom: 10px
  .slick-dots
    bottom: -76px
    li
      button:before
        content: ''
        width: 10px
        height: 10px
        background: white
        border-radius: 5px
        opacity: 1;
      &.slick-active
        button:before
          background: #248fbe
.carousel-nav
  text-align: center
  padding: 0 0 40px
  .nav
    margin: 0 5px
    display: inline-block !important
    background: $brand-primary
    border: 2px solid #fff
    box-shadow: -1px 2px 6px -2px rgba(0,0,0,0.4)
    cursor: pointer
    -moz-user-select: none
    -webkit-user-select: none
    -ms-user-select: none
    &:hover
      background-color: #248fbe
    &.slick-disabled
      display: none !important
  .prev
  .next
    font-size: 16px
    letter-spacing: 2px
    padding: 5px 10px

.welcome-title
  font-size: 20px
  padding: 15px 0

.welcome-img
  height: 300px
  border-radius: 6px
  &.slack
    height: 180px
    margin: 50px 0
  &.focus-one
    height: 50px
    margin: 20px 0 45px
  &.focus-two
    height: 164px

.logo
  position: relative
  width: 203px
  height: 58px
  display: block
  background: url("/images/sprite_3.png") -4px -3px no-repeat
  margin: 0 auto 12px

.logo:after
  content: "beta"
  display: block
  position: absolute
  right: 0
  top: 44px

.box
  position: relative
  cursor: initial
  .body
    padding: 6%
    .login-form
    #register-form
      .title
        margin: 5px 0 0 0
        text-align: center
        font-weight: 600
        font-size: 17px
        color: #fff
      .message
        text-align: center
        font-size: 14px
        margin: 30px 0
      .control-group
        position: relative
        margin-bottom: 10px
        &:last-of-type
          margin-top: 15px
        .for-user .icon
        .for-password .icon
        .for-email .icon
          border-bottom-left-radius: 4px
          border-top-left-radius: 4px
          border: 2px solid white
          border-right: 0
          width: 35px
          height: 35px
          position: absolute
          background: #28ade8
          color: white
          line-height: 35px
          font-size: 20px
          text-align: center
        .login-button
        #create-account
          border: 2px solid white
          border-radius: 4px
          font-size: 14px
          box-shadow: -1px 2px 6px -2px rgba(0,0,0,0.4)
          &:hover
            background-color: #248fbe
          &.disabled
          &.disabled:hover
            cursor: not-allowed
            background-color: rgb(135, 205, 249)
      .icon-spin2
        display: none
        position: absolute
        top: 9px
        left: calc(50% - 45px)
      &.processing
        .icon-spin2
          display: inline

.box .control-group input[type="text"],
.box .control-group input[type="email"],
.box .control-group input[type="password"]
  border: none
  color: #555
  font-size: 12px
  height: auto
  padding: 10px 6px
  width: 100%
  box-sizing: border-box
  margin: 0
  background-color: white
  -webkit-border-radius: 5px
  border-radius: 5px

.box .control-group [class*="for-"] input
  padding-left: 43px
  background-repeat: no-repeat
  line-height: 19px

#go-login
.signup-link
  display: block
  color: white
  text-align: center
  font-size: 17px
  cursor: pointer
  &:hover
    color: #204d74

.text-desc
  color: white
  font-style: italic
  padding: 3px 0 0

.loading-title
  text-align: center
  font-size: 80px
  color: #28ace8
  position: absolute
  top: 50%
  height: 100px
  margin-top: -100px
  width: 100%
  background-image: -webkit-linear-gradient(180deg, rgb(40, 172, 232) 60%, rgba(40, 172, 232, 0.7) 1px)
  background-repeat: repeat
  background-position: 0 0
  background-size: 10px 1px
  -webkit-text-fill-color: transparent
  -webkit-background-clip: text
  -webkit-animation: loading 2s linear infinite
  animation: loading 2s linear infinite
  span
    font-style: italic

.addContactPopup
  display: none

.popup
  background-color: #fff
  padding: 20px
  position: relative
  text-align: center
  max-width: 98%

.popup-container
  left: 50%
  top: 40px
  -webkit-transform: translateX(-50%)
  -moz-transform: translateX(-50%)
  -o-transform: translateX(-50%)
  -ms-transform: translateX(-50%)
  transform: translateX(-50%)
  min-width: 300px
  width: 46%

.add-new-users-container
  font-size: 14px
  margin-top: 10px
  text-align: left
  div
    display: table-cell
    padding: 5px 0 0
    vertical-align: top
    width: 100%

.add-new-users-container .btn
  margin-left: 5px

.add-new-users-container input[type="text"]
  color: #28ace8
  width: 100%

#share-pad-popup
  background: white
  padding: 20px
  border-radius: 2px
  width: 500px
  .icon-cancel
    color: $text-medium
  .popup-title
    margin-bottom: 10px
    font-size: 14px
  .popup-content
    position: relative
    .icon-docs
      position: absolute
      top: 6px
      right: 5px
      cursor: pointer
      color: #555
      &.zeroclipboard-is-hover
        color: #000
  .share-message, .shared-url
    width: 486px
    font-size: 12px
  .shared-url
    margin-bottom: 5px
  .share-description
    color: $gray
    margin-top: 0
  .share-message
    height: 90px
  .copied
    position: absolute
    top: 0
    left: 6px

.share-popup-external-container
  display: block
  width: 100%
  background-color: white

.share-popup-centered-container
  background: url("/images/_bg1.png") repeat left top
  box-shadow: 0 1px 2px 0px rgba(0, 0, 0, 0.33)
  width: 600px
  height: 400px
  margin: 0 auto
  border-radius: 2px

.share-popup-above-header
  height: 1px

.share-popup-header-container
  padding-bottom: 10px
  margin: 9px 20px 0px 20px
  background-color: rgba(0, 0, 0, 0.05)
  box-shadow: 0 1px 4px -1px rgba(0, 0, 0, 0.33)

.share-popup-header
  padding-top: 10px
  font-weight: bold
  text-align: center
  font-size: 16px
  line-height: 1.3
  color: #666
  top: 50%

.share-popup-internal-container
  padding: 0 20px 20px 20px

.share-content-card
  background-color: white
  padding: 20px 20px 20px 20px
  margin: 20px 0
  box-shadow: 0 1px 4px -1px rgba(0, 0, 0, 0.33)

.share-content-card-content
  text-align: left
  margin-left: 10px
  font-size: 14px
  line-height: 1.3
  color: #666
  top: 50%
  i
    font-size: 20px
    line-height: 20px
    height: 20px
    width: 20px
    margin-left: 0
    margin-right: 0
    &:before
      font-size: 20px
      line-height: 20px
      height: 20px
      width: 20px
      margin-left: 0
      margin-right: 0
    &.everythings-ok
      &:before
        font-size: 30px
        color: rgba(40, 172, 232, 1)

  .selectric-wrapper
    display: inline-block
    min-width: 150px

.nice-text-link
  color: rgba(40, 172, 232, 1)
  border-bottom: 1px dashed
  text-decoration: none

.share-popup-buttons-container
  position: absolute
  bottom: 0
  right: 0
  padding: 20px 20px 10px 20px

.share-popup-button
  display: inline-block
  margin: 0 0 0 15px
  padding: 0
  border: 0
  cursor: pointer
  font-family: "Open Sans", sans-serif
  &:active
    box-shadow: inset 1px 1px 1px 0px rgba(0, 0, 0, 0.33) !important

  &:disabled
    box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.33) !important
    cursor: default

.share-popup-button-content
  text-align: left
  font-size: 14px
  line-height: 1.3
  color: #fff
  top: 50%
  padding: 10px 15px

#share-ok
  background-color: rgba(40, 172, 232, 1)
  box-shadow: 0 1px 4px -1px rgba(0, 0, 0, 0.33)
  &:hover
    background-color: rgba(40, 172, 232, 0.87)
  &:disabled
    background-color: rgba(40, 172, 232, 0.7)
  &:active
    background-color: rgba(40, 172, 232, 0.7) !important

#share-cancel
  background-color: rgba(0, 0, 0, 0.5)
  box-shadow: 0 1px 4px -1px rgba(0, 0, 0, 0.33)
  &:hover
    background-color: rgba(0, 0, 0, 0.45)
  &:disabled
    background-color: rgba(100, 100, 100, 0.5)
  &:active
    background-color: rgba(100, 100, 100, 0.5) !important

.selectric .label,
.selectric-items li
  color: #666
  font-size: 14px

.selectric-items
  .disabled
    display: none

#share-emails
  background: white
  padding: 2px 4px
  border-radius: 5px
  margin-bottom: 5px
  min-height: 26px
  font-size: 12px
  cursor: text
  color: $text-dark
  word-break: break-all
  border: 1px solid #EEE
  .contact-item
    padding: 2px 4px
    font-size: 12px
    margin: 2px 0
    display: inline-block
    line-height: 20px
    cursor: pointer
  .fa-times
    cursor: pointer
  .account-avatar
    box-shadow: none
    border-radius: 50%
  .newEmail
    padding: 0 4px
    border: none
    margin: 2px 0
    min-width: 250px
    vertical-align: middle !important
    line-height: 20px
  .placeholder
    color: #aeaeae
  .icon-cancel
    position: initial
    font-size: 12px

#sys-message-popup
  display: none
  position: fixed
  top: 60px
  right: 20px
  min-width: 120px
  max-width: 300px
  line-height: 18px
  font-size: 12px
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 50%)
  background: white
  padding: 6px 10px 10px 10px
  z-index: 10000
  &.success
    border-left: 3px solid $green
    .icon
      color: $green
  &.warning
    border-left: 3px solid $yellow
    .icon
      color: $yellow
  p
    margin: 5px 0

#show-image-popup
  width: 60%
  height: 75%
  .img-container
    height: 100%
    width: 100%
    text-align: center
    vertical-align: middle
    img
      max-height: 100%
      max-width: 100%


// Growl alerts


.bootstrap-growl
  right: 15px !important
  top: 60px !important
  background-color: $brand-primary
  color: white
  font-size: 12px
  border: 1px solid #fff
  border-radius: 3px
  padding: 5px 20px
  width: 155px
  opacity: 1
  .close
    color: white
    opacity: 0.7

.bootstrap-growl.alert-error
  border: 1px solid #ebccd1
  background-color: $red
  color: white

.bootstrap-growl.alert-success
  border: 1px solid #8ac472
  background-color: $green-pastel
  color: white
