/*******************************
            Theme
*******************************/

$ui_type    = 'view';
$ui_element = 'item';

@import '../../theme.config';

/*******************************
            Standard
*******************************/

/*--------------
      Item
---------------*/

.ui.items > .item {
  display: $ui_display;
  margin: $ui_itemSpacing 0em;
  width: $ui_width;
  min-height: $ui_minHeight;
  background: $ui_background;
  padding: $ui_padding;

  border: $ui_border;
  border-radius: $ui_borderRadius;
  box-shadow: $ui_boxShadow;
  transition: $ui_transition;
  z-index: $ui_zIndex;
}
.ui.items > .item a {
  cursor: pointer;
}

/*--------------
      Items
---------------*/

.ui.items {
  margin: $ui_groupMargin;
}

.ui.items:first-child {
  margin-top: 0em !important;
}
.ui.items:last-child {
  margin-bottom: 0em !important;
}

/*--------------
      Item
---------------*/

.ui.items > .item:after {
  display: block;
  content: ' ';
  height: 0px;
  clear: both;
  overflow: hidden;
  visibility: hidden;
}
.ui.items > .item:first-child {
  margin-top: 0em;
}
.ui.items > .item:last-child {
  margin-bottom: 0em;
}



/*--------------
     Images
---------------*/

.ui.items > .item > .image {
  position: relative;
  flex: 0 0 auto;
  display: $ui_imageDisplay;
  float: $ui_imageFloat;
  margin: $ui_imageMargin;
  padding: $ui_imagePadding;
  max-height: $ui_imageMaxHeight;
  align-self: $ui_imageVerticalAlign;
}
.ui.items > .item > .image > img {
  display: block;
  width: 100%;
  height: auto;
  border-radius: $ui_imageBorderRadius;
  border: $ui_imageBorder;
}

.ui.items > .item > .image:only-child > img {
  border-radius: $ui_borderRadius;
}


/*--------------
     Content
---------------*/

.ui.items > .item > .content {
  display: block;
  flex: 1 1 auto;
  background: $ui_contentBackground;
  margin: $ui_contentMargin;
  padding: $ui_contentPadding;
  box-shadow: $ui_contentBoxShadow;
  font-size: $ui_contentFontSize;
  border: $ui_contentBorder;
  border-radius: $ui_contentBorderRadius;
}
.ui.items > .item > .content:after {
  display: block;
  content: ' ';
  height: 0px;
  clear: both;
  overflow: hidden;
  visibility: hidden;
}

.ui.items > .item > .image + .content {
  min-width: 0;
  width: $ui_contentWidth;
  display: $ui_contentDisplay;
  margin-left: $ui_contentOffset;
  align-self: $ui_contentVerticalAlign;
  padding-left: $ui_contentImageDistance;
}

.ui.items > .item > .content > .header {
  display: inline-block;
  margin: $ui_headerMargin;
  font-family: $ui_headerFont;
  font-weight: $ui_headerFontWeight;
  color: $ui_headerColor;
}
/* Default Header Size */
.ui.items > .item > .content > .header:not(.ui) {
  font-size: $ui_headerFontSize;
}

/*--------------
     Floated
---------------*/

.ui.items > .item [class*="left floated"] {
  float: left;
}
.ui.items > .item [class*="right floated"] {
  float: right;
}


/*--------------
  Content Image
---------------*/

.ui.items > .item .content img {
  align-self: $ui_contentImageVerticalAlign;
  width: $ui_contentImageWidth;
}
.ui.items > .item img.avatar,
.ui.items > .item .avatar img {
  width: $ui_avatarSize;
  height: $ui_avatarSize;
  border-radius: $ui_avatarBorderRadius;
}


/*--------------
   Description
---------------*/

.ui.items > .item > .content > .description {
  margin-top: $ui_descriptionDistance;
  max-width: $ui_descriptionMaxWidth;
  font-size: $ui_descriptionFontSize;
  line-height: $ui_descriptionLineHeight;
  color: $ui_descriptionColor;
}

/*--------------
    Paragraph
---------------*/

.ui.items > .item > .content p {
  margin: 0em 0em $ui_paragraphDistance;
}
.ui.items > .item > .content p:last-child {
  margin-bottom: 0em;
}

/*--------------
      Meta
---------------*/

.ui.items > .item .meta {
  margin: $ui_metaMargin;
  font-size: $ui_metaFontSize;
  line-height: $ui_metaLineHeight;
  color: $ui_metaColor;
}
.ui.items > .item .meta * {
  margin-right: $ui_metaSpacing;
}
.ui.items > .item .meta :last-child {
  margin-right: 0em;
}

.ui.items > .item .meta [class*="right floated"] {
  margin-right: 0em;
  margin-left: $ui_metaSpacing;
}

/*--------------
      Links
---------------*/

/* Generic */
.ui.items > .item > .content a:not(.ui) {
  color: $ui_contentLinkColor;
  transition: $ui_contentLinkTransition;
}
.ui.items > .item > .content a:not(.ui):hover {
  color: $ui_contentLinkHoverColor;
}

/* Header */
.ui.items > .item > .content > a.header {
  color: $ui_headerLinkColor;
}
.ui.items > .item > .content > a.header:hover {
  color: $ui_headerLinkHoverColor;
}

/* Meta */
.ui.items > .item .meta > a:not(.ui) {
  color: $ui_metaLinkColor;
}
.ui.items > .item .meta > a:not(.ui):hover {
  color: $ui_metaLinkHoverColor;
}



/*--------------
     Labels
---------------*/

/*-----Star----- */

/* Icon */
.ui.items > .item > .content .favorite.icon {
  cursor: pointer;
  opacity: $ui_actionOpacity;
  transition: $ui_actionTransition;
}
.ui.items > .item > .content .favorite.icon:hover {
  opacity: $ui_actionHoverOpacity;
  color: $ui_favoriteColor;
}
.ui.items > .item > .content .active.favorite.icon {
  color: $ui_favoriteActiveColor;
}

/*-----Like----- */

/* Icon */
.ui.items > .item > .content .like.icon {
  cursor: pointer;
  opacity: $ui_actionOpacity;
  transition: $ui_actionTransition;
}
.ui.items > .item > .content .like.icon:hover {
  opacity: $ui_actionHoverOpacity;
  color: $ui_likeColor;
}
.ui.items > .item > .content .active.like.icon {
  color: $ui_likeActiveColor;
}

/*----------------
  Extra Content
-----------------*/

.ui.items > .item .extra {
  display: $ui_extraDisplay;
  position: $ui_extraPosition;
  background: $ui_extraBackground;
  margin: $ui_extraMargin;
  width: $ui_extraWidth;
  padding: $ui_extraPadding;
  top: $ui_extraTop;
  left: $ui_extraLeft;
  color: $ui_extraColor;
  box-shadow: $ui_extraBoxShadow;
  transition: $ui_extraTransition;
  border-top: $ui_extraDivider;
}
.ui.items > .item .extra > * {
  margin: ($ui_extraRowSpacing / 2) $ui_extraHorizontalSpacing ($ui_extraRowSpacing / 2) 0em;
}
.ui.items > .item .extra > [class*="right floated"] {
  margin: ($ui_extraRowSpacing / 2) 0em ($ui_extraRowSpacing / 2) $ui_extraHorizontalSpacing;
}

.ui.items > .item .extra:after {
  display: block;
  content: ' ';
  height: 0px;
  clear: both;
  overflow: hidden;
  visibility: hidden;
}


/*******************************
          Responsive
*******************************/

/* Default Image Width */
.ui.items > .item > .image:not(.ui) {
  width: $ui_imageWidth;
}


/* Tablet Only */
@media only screen and (min-width: $ui_tabletBreakpoint) and (max-width: $ui_largestTabletScreen) {
  .ui.items > .item {
    margin: $ui_tabletItemSpacing 0em;
  }
  .ui.items > .item > .image:not(.ui) {
    width: $ui_tabletImageWidth;
  }
  .ui.items > .item > .image + .content {
    display: block;
    padding: 0em 0em 0em $ui_tabletContentImageDistance;
  }

}

/* Mobile Only */
@media only screen and (max-width: $ui_largestMobileScreen) {
  .ui.items:not(.unstackable) > .item {
    flex-direction: column;
    margin: $ui_mobileItemSpacing 0em;
  }
  .ui.items:not(.unstackable) > .item > .image {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  .ui.items:not(.unstackable) > .item > .image,
  .ui.items:not(.unstackable) > .item > .image > img {
    max-width: 100% !important;
    width: $ui_mobileImageWidth !important;
    max-height: $ui_mobileImageMaxHeight !important;
  }
  .ui.items:not(.unstackable) > .item > .image + .content {
    display: block;
    padding: $ui_mobileContentImageDistance 0em 0em;
  }
}


/*******************************
           Variations
*******************************/


/*-------------------
       Aligned
--------------------*/

.ui.items > .item > .image + [class*="top aligned"].content {
  align-self: flex-start;
}
.ui.items > .item > .image + [class*="middle aligned"].content {
  align-self: center;
}
.ui.items > .item > .image + [class*="bottom aligned"].content {
  align-self: flex-end;
}


/*--------------
     Relaxed
---------------*/

.ui.relaxed.items > .item {
  margin: $ui_relaxedItemSpacing 0em;
}
.ui[class*="very relaxed"].items > .item {
  margin: $ui_veryRelaxedItemSpacing 0em;
}


/*-------------------
      Divided
--------------------*/

.ui.divided.items > .item {
  border-top: $ui_dividedBorder;
  margin: $ui_dividedMargin;
  padding: $ui_dividedPadding;
}
.ui.divided.items > .item:first-child {
  border-top: none;
  margin-top: $ui_dividedFirstLastMargin !important;
  padding-top: $ui_dividedFirstLastPadding !important;
}
.ui.divided.items > .item:last-child {
  margin-bottom: $ui_dividedFirstLastMargin !important;
  padding-bottom: $ui_dividedFirstLastPadding !important;
}

/* Relaxed Divided */
.ui.relaxed.divided.items > .item {
  margin: 0em;
  padding: $ui_relaxedItemSpacing 0em;
}
.ui[class*="very relaxed"].divided.items > .item {
  margin: 0em;
  padding: $ui_veryRelaxedItemSpacing 0em;
}


/*-------------------
        Link
--------------------*/

.ui.items a.item:hover,
.ui.link.items > .item:hover {
  cursor: pointer;
}

.ui.items a.item:hover .content .header,
.ui.link.items > .item:hover .content .header {
  color: $ui_headerLinkHoverColor;
}


/*--------------
      Size
---------------*/

.ui.items > .item {
  font-size: $ui_relativeMedium;
}

/*---------------
   Unstackable
----------------*/

@media only screen and (max-width: $ui_largestMobileScreen) {
  .ui.unstackable.items > .item > .image,
  .ui.unstackable.items > .item > .image > img {
    width: $ui_unstackableMobileImageWidth !important;
  }
}

loadUIOverrides();

