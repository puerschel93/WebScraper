.have-time
    padding-top: rel-size(118px);
    padding-bottom: rel-size(118px);

    &__body
        display: flex;
        //padding: rel-size(80px) 0 rel-size(200px);

    &__price-section
        position: relative;
        width: 30%;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        justify-content: center;
        padding-right: rel-size(118px);

        +below(1238px)
            align-items: center;
            padding-right: 0;

    &__old-price
        font-family: ff-Quasimodo;
        font-size: rel-size(42px);
        line-height: rel-size(43px);
        text-align: right;
        text-decoration-line: line-through;
        color: #919191;
        margin-bottom: rel-size(10px);
        white-space: nowrap;

    &__new-price
        font-family: ff-Quasimodo;
        font-size: rel-size(42px);
        line-height: rel-size(43px);
        text-align: right;
        color: #FEFEFE;
        margin-bottom: rel-size(40px);
        white-space: nowrap;

    &__image-section
        width: 40%;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        height: rel-size(400px);

        img
            // position: absolute;
            // top: 50%;
            // left: 50%;
            // transform: translate(-50%,-50%);
            max-height: 100%;

    &__slider
        height: 100%;
        width: 100%;
        padding: rel-size(80px) 0 rel-size(100px);
        position: relative;

        +below(768px)
            padding: rel-size(80px) 0;

        .swiper-slide
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;

            +below(1238px)
                flex-direction: column;

            // &:before
            //     content: ' ';
            //     width: 300px;
            //     height: @width;
            //     border: 1px solid #3A3A3A;
            //     position: absolute;
            //     top: 50%;
            //     left: 50%;
            //     transform: translate(-50%,-50%) rotate(45deg) scale(1.5);
            //     opacity: 0;
            //     transition: 1.5s 0.5s;
            //     z-index: -1;

            & .have-time__price-section
                transform: translate(-50%,0);
                opacity: 0;
                transition: opacity 1.5s, transform 1.5s;

                +below(1238px)
                    order: 3;
                    transform: translate(0%,25%);

                &:hover .shadow-title
                    color: #222;

            & .have-time__info-section
                transform: translate(50%,0);
                opacity: 0;
                transition: transform 1.5s, opacity 1.5s;

                +below(1238px)
                    transform: translate(0%,50%);

            & .have-time__image-section
                transform: scale(1.1);
                position: relative;
                opacity: 0;
                transition: opacity 1.5s 1s, transform 1.5s 1s;

                +below(1238px)
                    order: 1;
                    margin-bottom: rel-size(80px);

                +below(560px)
                    width: 70%;

                +below(440px)
                    width: 90%;

                &:before
                    content: ' ';
                    width: 300px;
                    height: @width;
                    border: 1px solid #3A3A3A;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%,-50%) rotate(45deg) scale(1.5);
                    opacity: 0;
                    transition: transform 1.5s 0.5s;
                    z-index: -1;

                    +below(1238px)
                        width: 280px;
                        height: @width;

                    +below(880px)
                        width: 240px;
                        height: @width;

                    +below(560px)
                        width: 250px;
                        height: @width;

                    +below(440px)
                        width: 220px;
                        height: @width;

                    +below(360px)
                        width: 180px;
                        height: @width;

            & .shadow-title
                opacity: 0;
                transform: translate(50%,0) scale(0.9);
                transition: opacity 1.5s, transform 1.5s;

        .swiper-slide-active

            // &:before
            //     transform: translate(-50%,-50%) rotate(45deg) scale(1);
            //     opacity: 1;
            //     transition: 1.5s 2.5s;

            & .have-time__price-section
                transform: translate(0%,0);
                opacity: 1;
                transition: opacity 1.5s 1.5s, transform 1.5s 1.5s;

                +below(1238px)
                    transform: translate(0%,0%);

            & .have-time__info-section
                transform: translate(0%,0);
                opacity: 1;
                transition: opacity 1.5s 1.5s, transform 1.5s 1.5s;

                +below(1238px)
                    transform: translate(0%,0%);

            & .have-time__image-section
                transform: scale(1);
                opacity: 1;
                transition: opacity 1.5s 1s, transform 1.5s 1s;

                &:before
                    transform: translate(-50%,-50%) rotate(45deg) scale(1);
                    opacity: 1;
                    transition: opacity 1.5s 2.5s, transform 1.5s 2.5s;

            & .shadow-title
                opacity: 1;
                transform: translate(0%,0) scale(1);
                transition: opacity 1.5s 3s, transform 0s 0s, color 0.3s;

        .swiper-pagination
            bottom: 0;

            +below(1238px)
                bottom: initial;
                bottom: auto;
                top: 475px;

            +below(880px)
                top: 440px;

            +below(560px)
                top: 420px;

            +below(360px)
                top: 400px;

        .swiper-pagination-bullet
            background: none;
            border-radius: 0;
            width: 14px;
            height: @width;
            border: 1px solid #FEFEFE;
            transform: rotate(45deg);
            margin: 0 10px !important;
            user-select: none;


    &__info-section
        width: 30%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        padding-left: rel-size(118px);

        +below(1238px)
            order: 2;
            width: 100%;
            margin-bottom: rel-size(60px);
            padding-left: 0;
            align-items: center;

    &__info-title
        font-family: ff-Quasimodo;
        font-size: rel-size(42px);
        line-height: rel-size(43px);
        color: #FEFEFE;
        margin-bottom: rel-size(40px);

        +below(1238px)
            margin-bottom: rel-size(15px);

        +below(768px)
            font-size: rel-size(36px);
            line-height: rel-size(26px);

    &__info-text
        font-family: ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(18px);
        line-height: rel-size(34px);
        font-feature-settings: 'pnum' on, 'lnum' on;
        color: #919191;

        +below(1238px)
            text-align: center;
            padding: 0 rel-size(30px);

    .section-head

        +below(1238px)
            margin-bottom: 0;

    .shadow-title

        +below(1238px)
            text-align: center;
            line-height: 7vw;

        +below(768px)
            font-size: 100px;
            line-height: 60px;
            right: initial;
            right: auto;

.shadow-title
    font-family: ff-Quasimodo;
    font-size: 10vw;
    line-height: 11vw;
    opacity: 1;
    position: absolute;
    top: -3.5vw;
    right: 0;
    text-align: right;
    z-index: -1;
    color: transparent;
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: #3A3A3A;
