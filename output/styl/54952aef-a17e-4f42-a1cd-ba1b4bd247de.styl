.buy_type_box
  display: flex
  font-size: 34px
  line-height: 34px
  align-items: center
  justify-content: center
  background: rgba(239, 240, 242, 1)
  .item
    flex: 1
    padding: 25px 0
    text-align: center
    position: relative
    color: #989898
    border-radius: 12px 12px 0 0
    z-index:999
    &:after
      position: absolute
      content: ''
      bottom: 0
      display: none
      border-bottom: 85px solid #ffffff;
    &:before
      position: absolute
      width: 100%
      height: 90px
      content: ''
      left: 0
      bottom: 0
      background: #ffffff
      z-index:-1
      opacity 0
  .item:nth-child(1)
    &:after  
      border-left: 0px solid transparent;
      border-right: 40px solid transparent;
      right: -35px
     &:before
      border-radius: 12px 20px 0 0!important         
  .item:nth-child(2)
    &:after
      left: -35px
      border-right: 0px solid transparent;
      border-left: 40px solid transparent;
    &:before
      border-radius: 20px 12px 0 0!important
  .active
    color: #333
    position: relative
    &:before
      opacity 1
    &:after
      display: block
  

