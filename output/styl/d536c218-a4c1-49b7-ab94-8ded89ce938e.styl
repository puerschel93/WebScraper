.palette
  margin 0 -4px
  width 100%
  font-size 0

  &__control
    position absolute
    left -9999px

  &__item
    position relative
    z-index 1
    margin 0 4px 5px
    display inline-block
    size 32px
    border 1px solid $colorDecorative
    border-radius 50%
    box-shadow 0 4px 16px rgba(#000, 0.1)

    +above(980px)
      margin-right 18px

    .search__palette &
      +above(980px)
        margin-right 7px

    &::before
      position absolute
      left 50%
      bottom 100%
      margin-bottom 10px
      display none
      min-width 82px
      height 30px
      content attr(title)
      font-size 11px
      line-height 30px
      text-align center
      color #787878
      background-color #fff
      border 1px solid $colorDecorative
      opacity 0
      transition opacity .1s, transform .1s
      transform translate3d(-50%, 5px, 0)
      pointer-events none

    &:hover::before
      display block
      opacity 1
      transform translate3d(-50%, 0, 0)

    &::after
      position absolute
      left 50%
      bottom 100%
      margin-bottom 10px
      size 8px
      display none
      content ''
      opacity 0
      background-color #fff
      box-shadow 1px 1px 0 $colorDecorative
      transition opacity .1s, transform .1s
      transform translate3d(-50%, 5px, 0) rotate(45deg)

    &:hover::after
      display block
      opacity 1
      transform translate3d(-50%, 2px, 0) rotate(45deg)

    &_color_brown
      background-color #926547

    &_color_orange
      background-color #fabe00

    &_color_beige
      background-color #ffefd5

    &_color_yellow
      background-color #fde910

    &_color_green
      background-color #35ba2b

    &_color_azure
      background-color #0088ff

    &_color_blue
      background-color #0433ff

    &_color_purple
      background-color #9966cc

    &_color_pink
      background-color #ffc0cb

    &_color_white
      background-color #fff

    &_color_grey
      background-color grey

    &_color_black
      background-color #000

    &_color_gold
      background-color gold

    &_color_silver
      background-color silver

    &_color_magenta
      background-color magenta

    &_color_red
      background-color red

  &__check
    position absolute
    right -1px
    top 5px
    display none
    width 20px
    height 9px
    color #000
    border-bottom 3px solid
    border-left 3px solid
    transform rotate(-45deg)

    ^[0]__item_color_black &
      color #fff

    ^[0]__control:checked + &
      display block
