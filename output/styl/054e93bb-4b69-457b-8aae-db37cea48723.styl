@import "./button"

.at-form::after
    border: none

.at-input
    margin-left: 0

.at-input__title
    min-width: 200px

.at-input__title, .at-input input
    font-size: 30px

.at-input__children::after
        border: none

.at-input__title--required::before
    position absolute
    left: -20px
    top: 50%
    transform: translateY(-50%)
    color: #FF4949;
    font-size: 24px;
    content: "*";

.at-list__item
    padding: 24px 0

    .item-extra__icon-arrow
        font-size: 30px
        color: #333
    .item-content__info-title, .item-extra__info
        font-size: 30px
        color: #333

.at-tabs-pane
    margin-top: 2px

.at-accordion__header
    padding: 24px 0

.at-accordion__arrow
    font-size: 30px
    color: #333

.weui-picker, .weui-picker__hd
    font-size: 30px !important

body
    min-height: 100vh;
    background: #fff;

img
    max-width: 100%

.chen-wrap
    padding: 0 20px 20px
    box-sizing: border-box
    font-size: 30px
    overflow hidden
    min-height: calc(100vh - 100px)

.hr
    border-bottom: 2px solid #F0F0F2

.mr10
    margin-right: 10px
