    background-color: #718096;
}
.text-white{
    color: #fff;
}
.mx-auto {
    margin-left: auto;
    margin-right: auto;
}
.grid-cols-11 {
    grid-template-columns: repeat(12, minmax(0, 1fr));
}
.post-content-grid{
    grid-column: span 12 / span 12;
}
.col-span-2 {
    grid-column: span 3 / span 3;
}
.topic-grid {
  grid-template-columns: repeat(1, minmax(0, 1fr));
}
.post-item-grid{
    grid-template-columns: repeat(1, minmax(0, 1fr));
}
.level-1 {
    font-size: 1.1rem;
    line-height: 1.5rem;
}

.level-2 {
    font-size: 0.9rem;
    line-height: 1.7rem;
    padding-left: 0.5rem;
}

.level-3 {
    font-size: 0.7rem;
    line-height: 1.5rem;
    padding-left: 1rem;
}
.container {
    width: 100%;
}
.home-search {
  padding-top: 5rem;
  padding-bottom: 8rem;
}

.home-search .search-box{
     width:70%;
     max-width:30rem;
     margin-right:2rem;
}
.post-title {
  font-family: PT Serif, Serif;
  font-size: 20px;
  cursor: pointer;
  transition: all .2s;
  text-decoration: none;
  line-height: 30px;
  font-weight: bold;
}

.post-desc {
  font-size: 14px;
  color: #a1a1a1;
  line-height: 24px;
}

.post-tag {
  margin-right: 0.3rem;
  border: 1px solid #a1a1a1;
  border-radius: 1rem;
  padding: 0 0.6rem;
  font-size: 12px;
  color: #a1a1a1;
}

.post-tag:hover {
  border: 1px solid #d05dd2;
  color: #d05dd2;
}
.home-search input{
    width:95%;
    max-width:30rem;
    left:0;
    height:2.8rem;
    background: #fff url(/assets/img/search.83621669.svg) 0.9rem 0.9rem no-repeat;
    background-size: 1rem;
    padding: 0 0.5rem 0 2.5rem;
}
.hover-a:hover{
  color: #d05dd2;
}
.home-search input:focus{
    width:95%;
    max-width:30rem;
}
.nav-p {
  margin-left: 0.3rem;
  display: none;
}
/*sm*/
@media (min-width: 640px) {
  .topic-grid {
    grid-template-columns: repeat(1, minmax(0, 1fr));
  }
  .post-item-grid{
      grid-template-columns: repeat(1, minmax(0, 1fr));
  }
  .container {
      max-width: 640px;
  }
   .nav-p{
     display: none;
   }
}

/*md*/
@media (min-width: 768px) {
  .topic-grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
  .post-item-grid{
      grid-template-columns: repeat(1, minmax(0, 1fr));
  }
  .container {
      max-width: 768px;
  }
   .nav-p{
     display: none;
   }
}

/*lg*/
@media (min-width: 1024px) {
  .topic-grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
  .post-item-grid{
      grid-template-columns: repeat(2, minmax(0, 1fr));
  }
  .container {
      max-width: 1024px;
  }
  .post-content-grid{
      grid-column: span 12 / span 12;
  }
 .nav-p{
   display: block;
 }
}

/*xl*/
@media (min-width: 1280px) {
  .topic-grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
    .post-item-grid{
        grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  .container {
      max-width: 1200px;
  }
  .post-content-grid{
      grid-column: span 9 / span 9;
  }
}

