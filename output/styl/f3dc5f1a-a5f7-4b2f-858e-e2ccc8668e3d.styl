@import "./base";

body, html
  background #f8f8f8!important

.prev-login {
  width: 100%;
  max-width 750px
  margin 0 auto

  .profile-wp {
    width: 100%;
    text-align: center;

    img {
      width: 100%;
      height 233px
    }
  }

  .profile {
    position: relative;
    width: 100%;
    text-align: center;

    .profilebg {
      position: absolute;
      top: 45px;
      width: 100%;
      text-align: center;
      cursor pointer;

      img {
        width 100px;
        height 100px;
        border-radius: 50%;
      }
    }

    .loginbox {
      clear: both;
      position: absolute;
      width 100%;
      top: 155px;
      text-align: center;
      line-height: 1;

      a {
        display: inline-block;
        font-size 26px;
        font-weight: normal;
      }

      a.login {
        color: #8590A6;
      }

      a.editor {
        width 15px
        height 15px
        margin-left 5px

        img {
          width 15px
          height 15px
        }
      }
    }
  }

  .version-list {
    clear: both;
    margin-top: 10px;
    background: #fff;
    padding-left: 15px;
    padding-right: 15px;

    a {
      width: 100%;
      border-bottom: 1px solid #e6e6e6;
      padding-top: 10px;
      padding-bottom: 10px;
      margin: 0;
      display: flex;
      justify-content: flex-start;
      align-items: center;
      position: relative;

      span {
        padding: 0;

        &:first-child {
          width: 70%;
          font-size: 14px;
          color: #000;
        }

        b {
          width: 6px;
          height: 6px;
          border-radius: 50%;
          background: #E14123;
          display: inline-block;
          vertical-align: middle;
        }
      }

      span.col-md-4 {
        width: 30%;
        color: #939393;
        text-align: right;
      }

      em {
        position: absolute;
        right: 0;
        display: inline-block;
        width: 12px;
        height: 20px;
        padding-left: 15px;
        padding-right: 0;

        img {
          width 100%
          height 100%
        }
      }
    }

    a:last-child {
      border-bottom: none;
    }
  }
}

.after-login {
  width: 100%;
  max-width 750px
  margin 0 auto
  margin-top 91px

  .profile-wp {
    width: 100%;
    text-align: center;

    img {
      width: 100%;
      height 233px
    }
  }

  .profile {
    position: relative;
    width: 100%;
    text-align: center;

    .profileInfo {
      display flex
      width 100%
      top 45px
      position absolute
    }

    .profile-r {
      flex 1
      margin-left 10px
    }

    .profilebg {
      width: 85px;
      text-align: center;
      padding-left 15px
      position relative

      img {
        width: 70px;
        height: 70px;
        border-radius: 50%;
      }

      .accoutFreeze {
        position absolute
        background #f97272
        width 80px
        height 20px
        line-height 20px
        color #fff
        font-size 12px
        border-radius 10px
        bottom 0
        right -5px

        i {
          text-decoration none 
          display inline-block
          margin-right 5px
          width 12px
          height 12px
          vertical-align -2px
          margin-left 5px

          img {
            width 100%
            height 100%
          }
        }
      }
    }

    .loginbox {
      clear: both;
      width: 100%;
      text-align: left;
      line-height: 1;

      a {
        display: inline-block;
        font-size: 26px;
        font-weight: normal;
      }

      a.editor {
        width 16px
        height 16px
        margin-left 5px
        
        img {
          width 100%
          height 100%
        }
      }

      a.login {
        color: #8590A6;
      }
    }

    .news-version {
      position: absolute;
      top: 60px;
      width: 100%;
      text-align: center;
      height: 30px;

      .version-bg {
        width: 152px;
        height: 30px;
        margin: 0 auto;

        img {
          width: 100%;
        }
      }

      p {
        position: absolute;
        top: 0;
        color: #fff;
        font-size: 16px;
        height: 30px;
        margin: 0;
        width: 100%;
      }
    }

    .loginbox a.logout {
      font-size: 26px;
      font-weight: normal;
      color: #000;
    }

    .editorInfo {
      width: 100%;
      text-align: left;
      color: #939393;
      font-size: 12px;
      padding-top 5px
      clear both

      a {
        display: inline-block;
        width: 60px;
        height: 24px;
        border: 1px solid #000;
        border-radius: 4px;
        line-height: 24px;
        color: #939393;
        font-size: 12px;
      }
    }
  }

.pelInfoCont {
  clear both
  margin 0 auto
  width 100%
  background #fff

  .data {
    overflow hidden
    display flex
    padding: 10px 15px

    .title {
      font-size 16px
      color: #000
      font-weight bolder
      line-height 40px
    }

    .earnings {
      text-align right
      color #fff
      flex 1

      span {
        display inline-block
        color #1287E4
        width 100%
        line-height 1

        em {
          display inline-block
          font-style normal
          margin-left 2px
        }

        &:first-child {
          font-size 16px

          em {
            font-size 12px
          }
        }

        &:last-child {
          font-size 12px
          opacity 0.5
          color #FE8100

          em {
            margin-left 0;
          }
        }
      }
    }
  }
}

