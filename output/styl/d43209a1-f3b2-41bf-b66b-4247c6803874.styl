.section.games {
    background-color: white;
    padding-bottom: 100px;

    h2 {
        width: 100%;
        text-align: center;
        text-transform: uppercase;
        font-size: 36px;
        line-height: 37px;
    }

    .container-wrp {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .games-texts {
        margin-top: 60px;

        .h2, .b1 {
            max-width: 960px;
            text-align: left;
        }

        .h2 {
            font-size: 32px;
            line-height: 33px;
        }

        .b1 {
            margin-top: 45px;
        }
    }
}

.games-gallery {
    position: relative;
    margin-top: 100px;
    width: 920px;
    padding: 0 15px;

    @media all and (min-width: 0) and (max-width: 800px) {
        margin-top: 35px;
        // padding: 0 0 0 15px;
        padding: 0;
        width: 100%;
    }

    .unit {
        max-height: 200px;
        max-width: 200px;
        padding: 0 15px;
        cursor: pointer;
        position: relative;

        @media all and (min-width: 0) and (max-width: 800px) {
            padding: 0 10px;
            width: 300px;
            max-width: 300px;
            height: 430px;
            max-height: 431px;
            display: flex;
        }

        &:hover {
            .unit__wrp {
                opacity: 1;
                pointer-events: auto;
            }
        }

        &__bg {
            height: 100%;
            width: calc(100% - 30px);
            border-radius: 40px;
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            overflow: hidden;
            background-color: red;

            img {
                height: 100%;
                width: 100%;
                object-fit: contain;
            }

            @media all and (min-width: 0) and (max-width: 800px) {
                padding: 0;
                position: static;
                height: 300px;
                width: 100%;
                transform: unset;
            }
        }

        &__wrp {
            padding: 15px;
            position: relative;
            height: 200px;
            width: 200px;
            border-radius: 40px;
            background-color: rgba(0, 0, 0 0.6);
            opacity: 0;
            pointer-events: none;
            border-radius: 40px;
            transition: opacity 0.25s ease;
            box-sizing: border-box;
            color: white;
            display: flex;
            flex-direction: column;

            @media all and (min-width: 0) and (max-width: 800px) {
                border-radius: 18px;
                overflow: hidden;
                margin-top: 15px;
                width: 100%;
                height: auto;
                opacity: 1;
            }
        }

        &__links {
            margin-top: auto;
            display: flex;
            flex-direction: column;
            justify-content: space-between;

            @media all and (min-width: 0) and (max-width: 800px) {
                margin-top: 10px;
                flex-direction: row;
            }
        }

        &__link {
            margin-bottom: 10px;
            display: block;
            height: 40px;
            flex-shrink: 0;
            transition: opacity 0.25s ease;

            &:last-child {
                margin-bottom: 0;
            }

            &:hover {
                opacity: 0.8;
            }

            img {
                height: 100%;
                object-fit: contain;
            }

            @media all and (min-width: 0) and (max-width: 800px) {
                margin-bottom: 0;
            }
        }
    }

    .arrow {
        height: 50px;
        width: 50px;
        border-radius: 50%;
        background: #888 50% 50% / 24px 24px no-repeat;
        position: absolute;
        top: 50%;
        cursor: pointer;
        opacity: 0.5;
        transition: opacity 0.25s ease;

        @media all and (min-width: 0) and (max-width: 800px) {
            display: none !important;
        }

        &:hover {
            opacity: 1;
        }

        &::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            border-radius: 50%;
            height: 70px;
            width: 70px;
            border: 1px solid #888;
            transform: translate(-50%, -50%);
        }

        &-pre {
            transform: translate(-100%, -50%);
            left: -15px;
            background-image: url("data:image/svg+xml,%3Csvg width='3' height='4' viewBox='0 0 3 4' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M3 4L0 2L3 0L3 1L1.5 2L3 3V4Z' fill='white'/%3E%3C/svg%3E%0A");
            background-position: 40%;
        }

        &-next {
            transform: translate(100%, -50%);
            right: -15px;
            background-image: url("data:image/svg+xml,%3Csvg width='3' height='4' viewBox='0 0 3 4' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 4L3 2L0 0L0 1L1.5 2L0 3L0 4Z' fill='white'/%3E%3C/svg%3E%0A");
            background-position: 60%;
        }
    }
}
