footer
  width 100%
  height auto
  background-color #181818
  z-index 10

  .footer-content
    width 100%
    height auto
    padding-top 18px
    padding-bottom 18px
    justify-content space-between
    align-items center
    flex-direction row
    box-sizing border-box
    @media (min-width 1280px)
      padding-right 15px

    .conf-block
      p
        font-family "Blogger_Sans"
        color #929292
        font-size 14px
        font-weight 400
        line-height 20px
        text-align left
        @media (min-width 768px)
          font-size 16px
          font-weight 400
          line-height 20px
        @media (min-width 1280px)
          font-size 18px
          font-weight 400
          line-height 20px

      a
        color #ffffff
        font-family "Blogger_Sans"
        font-size 14px
        font-weight 400
        line-height 20px
        border-bottom 1px solid transparent
        transition all 0.2s ease
        &:hover
          border-bottom 1px solid #fff
        &:active
          color rgba(255, 255, 255, 0.75)
          border-bottom 1px solid rgba(255, 255, 255, 0.75)

    .nt
      width auto
      height auto

      a
        img
          width auto
          height auto

        .nt-big
          display none
          @media (min-width 768px)
            display block
            width 100%

        .nt-mini
          width 100%
          height auto
          @media (min-width 768px)
            display none


.thnx
  display none

#politic
  width 100%
  display none
  height 100%
  padding 10px 20px
  box-sizing border-box
  text-align left
  background-color #1d1d1d

  .politic-popup
    width 100%
    height 100%
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column


    h2
      color #ffffff
      font-family "GretaDisplayPro"
      font-size 21px
      font-weight 400
      text-transform uppercase
      margin-bottom 18px
      @media (min-width 768px)
        font-size 23px
        font-weight 400
        text-transform uppercase
        margin-bottom 20px
        br
          display none
      @media (min-width 1280px)
        font-size 25px
        font-weight 400
        margin-bottom 24px

    p
      color #929292
      font-family "Blogger_Sans"
      font-size 14px
      font-style italic
      line-height 20px
      padding 0 15px
      box-sizing border-box
      text-align center
      @media (min-width 768px)
        width 80%
        font-size 16px
        line-height 20px
      @media (min-width 768px)
        width 60%
        font-size 20px
        line-height 20px


#form-calculation
  width 100%
  display none
  height 100%
  background-color #1d1d1d
  .calculation-popup
    width 100%
    height auto

    padding-top 119px
    @media (min-width 768px)
      padding-top 30%
    @media (min-width 1280px)
      padding-top 15%

    form
      width 100%
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

      h2
        color #ffffff
        font-family "GretaDisplayPro"
        font-size 21px
        font-weight 400
        text-transform uppercase
        margin-bottom 18px
        @media (min-width 768px)
          font-size 23px
          font-weight 400
          text-transform uppercase
          margin-bottom 20px
          br
            display none
        @media (min-width 1280px)
          font-size 25px
          font-weight 400
          margin-bottom 24px

      input
        width 296px
        height 52px
        box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.2)
        border-radius 5px
        border none
        background-color #313131
        margin-bottom 8px
        font-family "Blogger_Sans-Italico"
        font-size 14px
        font-weight 300
        font-style italic
        line-height 20px
        text-align center
        color #ffffff!important

        &::-webkit-input-placeholder
          color #ffffff!important
        @media (min-width 768px)
          width 590px
          height 66px
          margin-bottom 10px

      button
        width 184px
        height 52px
        border-radius 64px
        border 2px solid #b69977
        color #ffffff
        font-family "Blogger_Sans"
        font-size 10px
        font-weight 500
        text-transform uppercase
        transition all 0.2s ease
        cursor pointer
        background-color transparent
        margin-top 10px
        &:hover
          border 2px solid #cdb69b
        @media (min-width 768px)
          width 230px
          height 66px
          font-size 12px
          font-weight 500
        @media (min-width 1280px)
          width 284px
          height 82px
          font-size 14px
          font-weight 500

    p
      color #929292
      font-family "Blogger_Sans"
      font-size 14px
      font-style italic
      line-height 20px
      padding 0 15px
      box-sizing border-box
      text-align center
      margin-top 61px
      @media (min-width 768px)
        font-size 16px
        line-height 20px


