/* CUSTOM STORY STYLE */

body
    padding 5vw
    padding-bottom 0em
    
@media (max-width: 1000px)
    body
        padding 0vw
        padding-top 5em

@font-face
	font-family Avenir

.explanatory-container
    height (100vh - 8rem)
    width 95%
    position relative
    margin 0 auto

.wrapper-container
	height 80vh
	width 100%
	position relative
	margin 0 auto

#graphic-wrapper
	height (100vh - 8rem)
	width 100%
	position relative
    overflow visible
    fill black



@font-face
    font-family $sans 

.wrapper
    position relative
    align-items center
    margin-right 10rem
    margin-left 10rem
    display block
    overflow visible

.bounds
    overflow visible

.tooltip
    opacity 0

.bounds-background
    fill white

.rect-tile
    opacity 0.25
    stroke-width 1
    stroke-opacity 1

.recordigami-tile
    opacity 1
    stroke-width 1
    stroke-opacity 1

.season-path
    stroke-opacity 1

.record-label
    font-feature-settings 'tnum' 1
    transition all 0.1s ease-out

.season-label
    font-size 0.36em
    text-anchor end
    font-feature-settings 'tnum' 1
    transition all 0.1s ease-out

.recordigami-legend-value
    transform translate(-50%, 50%) rotate(45deg)

.legend-tile
    stroke-opacity 0

.bookend-legend-tile
    stroke-opacity 0

.legend-tick
    stroke black

.voronoi
    fill transparent



.autocomplete
    box-shadow none !important
    position absolute
    left 50%
    margin-right -50%
    transform: translate(-50%, -91%)
    font-size 24px
    pointer-events all
    z-index 10
    border none
    outline none

.typeahead
    box-shadow none !important
    width 355px
    position relative
    opacity 0
    border none
    z-index 10

input[type=text]
    font-size 24px
    font-family 'Raleway'
    background-color transparent
    width 355px
    opacity 1
    outline-width 0
    text-align center
    border-bottom none

@media (max-width: 1000px)

    input[type=text]
        font-size 20px
        font-family 'Raleway'
        background-color transparent
        width 300px
        opacity 1
        outline-width 0
        text-align center
        border-bottom none


.typeahead.dropdown-menu, span.twitter-typeahead .tt-menu
    min-width 100%
    background white
    border none
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
    border-radius 0
    font-size 1.2rem

span
    &.twitter-typeahead
        .tt-hint
            font-size 0
        .tt-suggestion
            color gray
            cursor pointer
            padding 1rem
            text-transform capitalize
            font-weight 400
        .tt-menu
            max-height 300px
            overflow-y auto

span.twitter-typeahead .active.tt-suggestion,
span.twitter-typeahead .tt-suggestion.tt-cursor,
span.twitter-typeahead .active.tt-suggestion:focus,
span.twitter-typeahead .tt-suggestion.tt-cursor:focus,
span.twitter-typeahead .active.tt-suggestion:hover,
span.twitter-typeahead .tt-suggestion.tt-cursor:hover
    background-color #EEEEEE
    color #4285F4


.positive-bars
    opacity 1

.negative-bars
    opacity 1

.bar-diffs
    opacity 1

.era-background
    opacity 1


#scrolly-side .scrolly
    display flex
    margin-right 0rem
    margin-left 0rem
    background-color transparent
    & > *
        flex 1

    article
        max-width 15rem

        .step-intro
            min-height 1vh
            margin-bottom 3rem
            background-color transparent

        .step-outro
            min-height 50vh
            margin-bottom 0rem
            background-color transparent
            transition background-color 250ms ease-in-out
            &:last-of-type
                margin-bottom 0
            &.is-active
                background-color $secondary
            .row 
                display flex
                max-height 30%

            .large-image
                margin auto
                object-fit contain
                max-height 8rem
                max-width 12rem


            .small-image
                object-fit contain
                margin 2%
                max-width 30%
                max-height 5rem

            p
                margin 0
                font-family Avenir
                color black
            h1
                margin 0
                text-align center
                font-weight 400
                color black
                font-size 24px
                font-family "Avenir"
            h2
                margin 0
                text-align center
                font-weight 400
                color black
                set-type-size(large)

        .step
            min-height 50vh
            margin-bottom 3rem
            background-color transparent
            transition background-color 250ms ease-in-out
            &:last-of-type
                margin-bottom 0
            &.is-active
                background-color $secondary
            
            .row 
                display flex
                max-height 30%

            .large-image
                margin auto
                object-fit contain
                max-height 8rem
                max-width 12rem


            .small-image
                object-fit contain
                margin 2%
                max-width 30%
                max-height 5rem

            p
                margin 0
                font-family Avenir
                color black
            h1
                margin 0
                text-align center
                font-weight 400
                color black
                font-size 24px
                font-family "Avenir"
            h2
                margin 0
                text-align center
                font-weight 400
                color black
                set-type-size(large)
                

    figure.sticky
        position sticky
        background transparent
        height (100vh - 8rem)
        bottom 4rem
        top 4rem
        left 0


@media (max-width: 10000px)
    #scrolly-side .scrolly
        display block
        max-width 60rem
        margin 3rem auto
        background-color transparent
        padding 1rem

        article
            z-index 100
            padding 0
            width 100%
            max-width 400px
            margin 0 auto
            position relative

            .step-intro
                max-height 1vh
                margin-bottom 3rem
                background-color transparent
            
            .step-outro
                max-height 1vh
                margin-bottom 3rem
                background-color transparent

            .step
                min-height 100vh
                margin-top 30vh
                &:last-of-type
                    margin-bottom 0
                &.is-active
                    p
                        background-color $secondary

                p
                    margin 0
                    font-family Avenir
                    color black
                    background-color rgba(255, 255, 255, 0.75)
                    text-align center
                    border 1px solid #000000;
                    padding 10px 20px 10px 20px
                    border-radius 20px
                h1
                    margin 0
                    text-align center
                    font-weight 400
                    color black
                    font-size 24px
                    font-family "Avenir"
                h2
                    margin 0
                    text-align center
                    font-weight 400
                    color black
                    set-type-size(large)

                .large-image
                    margin auto
                    object-fit contain
                    max-height 8vh
                    max-width 150px
                    

        figure.sticky
            position sticky
            width 100%
            height (100vh - 8rem)
            background transparent
            margin 0
            top 11vh
            left 0


.interactive-wrapper
    position fixed
    overflow scroll
    right 3rem
    height 100vh
    width 19rem
    pointer-events none
    overflow visible

.mobile-break
    min-height 20vh

#explanatory-history-wrapper
    width: 100%

.overall-label
    font-family Avenir
    text-underline-offset 3px

.best-label
    font-family Avenir

.worst-label
    font-family Avenir

.green-text
    color #1a9850
    font-weight bold

.yellow-text
    color #fecb3f
    font-weight bold

.red-text
    color #d73027
    font-weight bold

.gray-text
    color #828282
    font-weight bold

.link-text:hover
    text-decoration none 
    color #04A933
    font-weight 700px
    border-bottom 2px solid #04A933

.link-text-green:hover
    text-decoration none 
    color #1a9850
    font-weight 700px
    border-bottom 2px solid #1a9850

.link-text-yellow:hover
    text-decoration none 
    color #fecb3f
    font-weight 700px
    border-bottom 2px solid #fecb3f

.link-text-red:hover
    text-decoration none 
    color #d73027
    font-weight 700px
    border-bottom 2px solid #d73027

.link-text-color
    color #fff

.text
    margin 0 auto
    padding 0
    max-width 1000px
    

    &__hed
        max-width 60rem
        margin 0 auto
        text-align center
        
    &__dek
        max-width $column-width
        margin 0 auto
        margin-top 1rem
        text-align center
    
    &__prelude
        font-family "Avenir"

    &__byline
        font-family "Avenir"
        max-width $column-width
        margin 0 auto
        margin-top 1rem
        text-align center
    
    &__time
        display block
        max-width $column-width
        margin 0 auto
        margin-top 1rem
        text-align center
