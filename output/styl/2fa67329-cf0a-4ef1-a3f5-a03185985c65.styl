blanco = #FFF
marron = #AC291F
verde = #4D9379
naranjo = #E3713B
amarillo = #E5C730
cafe = #86663E
gris = #5D5D5D

button
    background-color verde !important
    border-color verde !important
    float left
    margin-top 20px
    width 100%
h1
    color verde
    font-family "Open Sans", sans-serif
    font-size 24px
    font-weight 300
    margin-top 0
hr
    border-style solid
    border-color #DDD
p
    font-family "Open Sans", sans-serif
    font-size 14px !important
    font-weight 300 !important
table
    border-bottom 1px solid #DDD !important
    float left
    margin-top 20px
    thead
        th
            border 1px solid #DDD !important
            color verde
            padding 8px !important
            text-align center !important
    tbody
        tr
            td
                padding-right 20px !important
                text-align right
                &:first-child
                    color verde
                    text-align left !important
#contenedor_list
    margin-top 30px
#csv
    margin-left 20px
    i
        color blanco
        font-size 12px
        position inherit
#descuentos
    margin-bottom 30px
    .col-md-6
        &:first-child
            border-right solid 1px verde
    button
        margin-top 0
#generar
    i
        color blanco
        position inherit
    span
        margin-left 10px
#listado_info, #listado_length, #listado_filter, #listado_paginate
    color verde
    font-family "Open Sans", sans-serif
    font-weight 300 !important
    label
        font-weight 300 !important
#listado_paginate
    .disabled
        color gris !important
    .next
        color verde !important
        &:hover
            text-decoration underline !important
    .paginate_button
        background none
        border none
        color #006064 !important
        &:hover
            text-decoration underline !important
        &.current
            color marron !important
            font-weight 500 !important
            &:hover
                cursor default
                text-decoration none !important
#listado_wrapper
    padding-top 20px
#tabla_material
    width 100%
    h4
        color verde
        font-family "Open Sans", sans-serif !important
        font-weight 300 !important
        text-align center
    table
        td
            text-align center
            &:first-child
                text-align center
            &.ultimo
                color verde
                padding 5px 20px
                text-align center
                button
                    background-color naranjo !important
                    border-color naranjo !important
#ver
    thead
        tr
            background url("../admin/img/nav-bg.gif") repeat-x scroll left top #E1E1E1 !important
.box_client
    box-sizing border-box
    cursor pointer
    display inline-block
    margin-top 20px
    padding 10px
    hr
        border-color blanco
        border-style solid
        margin-bottom 10px
        margin-top 10px
    img
        float left
    section
        color blanco
        display inline-block
        float left
        font-size 16px
        &.local
            border-right solid 1px blanco
            text-align center
            padding-right 10px
            width 40%
            small
                display block
                text-align center
        &.venta
            text-align center
            width 60%
            small
                display block
                text-align center
        &.vista
            display block
            i
                color blanco
    .header
        color blanco
        font-family "Open Sans", sans-serif !important
        font-weight 300 !important
        text-align right
.close
    background-color transparent !important
    margin-top 20px
    margin-right 20px
    width inherit
.filtros
    margin-top 20px
.highcharts-grid
    path
        &:first-child
            stroke amarillo
            stroke-width 3
.highcharts-title
    font-family "Open Sans", sans-serif
    font-weight 300
.label-danger
    font-family "Open Sans", sans-serif
    font-size 18px
    font-weight 300
.modal-backdrop
    z-index 0
.modal-dialog
    overflow auto
    width 90%
    .container
        margin-bottom 20px
        h4
            color verde
            font-family "Open Sans", sans-serif !important
            font-weight 300 !important
            text-align center
        table
            thead
                tr
                    background url("../admin/img/nav-bg.gif") repeat-x scroll left top #E1E1E1 !important
                    th
                        color naranjo
                    &:first-child
                        background none !important
                        border-top solid 1px blanco !important
                        border-left solid 1px blanco !important
                        th
                            color naranjo
            tbody
                td
                    text-align center
.nav-tabs
    a
        color verde !important
        font-family "Open Sans", sans-serif
        font-size 14px
        font-weight 300
    li
        margin-bottom -2px
        &.active
            a
                border-top solid !important
.periodo
    color marron
    font-family "Open Sans", sans-serif
    font-size 24px
    font-weight 300
.primera_cab
    color transparent !important
.table-responsive
    table
        thead
            tr
                background url("../admin/img/nav-bg.gif") repeat-x scroll left top #E1E1E1 !important
        tbody
            tr
                td
                    text-align center