.footer
   background: $black
   color: white
   padding 40px 0 100px 0
   &__title
      font-size 21px
      font-weight: 700
      padding-bottom: 25px
   &__content
      display flex
      align-items center
      justify-content space-between
      border-bottom solid 1px $grey
      padding-bottom: 40px
      margin-bottom: 25px
      @media $afterDesktop
         align-items flex-end
      @media $bigPhone
         flex-direction column
         align-items flex-start
   &__list
      display flex
      align-items center
      @media $afterDesktop
         flex-direction column
         align-items flex-start
      @media $bigPhone
         margin-bottom: 24px
      //@media $desktop
      //   flex 0 0 80%
      //   max-width 80%
      //   justify-content space-between
      //@media screen and (max-width: 1115px)
      //   flex-direction column
      //   align-items flex-start

   &__item
      margin-right: 64px
      color $white
      display block
      transition 0.3s
      position relative
      white-space nowrap
      font-size 16px
      @media $desktop
         margin-right: 0
         font-size 14px
      @media $afterDesktop
         margin 7.5px 0
      @media $phoneS
         font-size 12px
      //@media screen and (max-width: 1115px)
      //   margin 7.5px 0
      &::after //// Удалить если не понравиться!!!!
         display: block
         content: ""
         background-color: $white
         height: 1px
         width: 0%
         transition: 0.3s
         transform: translateX(-50%)
         position: absolute
         left: 50%
         @media $tablet
            display none
      &:hover:after, &:hover:before
         width: 100%
         @media $tablet
            display none
   &__row
      opacity 0.7
      font-size 14px
