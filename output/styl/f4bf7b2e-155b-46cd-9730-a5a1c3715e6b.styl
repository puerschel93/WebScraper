@import "nib/positions"

.b-doc-wrapper
	position relative
	display flex
	flex-direction column
	min-height 100%

$border = 1px #E1E0DE solid
$headerHeight = 8rem

.b-header
	box-sizing border-box
	padding 0 5rem
	height $headerHeight
	border-bottom $border

	display flex
	justify-content space-between
	align-items center

	background radial-gradient(rgba(0, 0, 0, 0.05) 1px, transparent 1px)
	background-color #FFF
	background-size 6px 6px

	&__logo-text
		display inline-block
		color $logoColor
		font 700 3.4rem\/2.5rem $logoFamily
		transform translateY(-0.45em)

	&__logo:hover &__logo-text
		color $hoverLinkColor

	&__logo
		text-decoration none

		> img
			height 6rem

.b-content-wrapper
	display flex
	align-content flex-start
	box-sizing border-box
	width 100%

$contentsWidth = 22rem
$contentsColor = #F5F2F0

.b-contents
	position absolute
	top $headerHeight
	bottom 0

	overflow auto
	box-sizing border-box
	width $contentsWidth
	border-right $border
	font-size 0.9rem

	padding 1.5em
	background #F5F2F0

	ol,
	ul
		margin 0

	li > ol,
	li > ul
		margin-left 0.5em

	&_full_true
		position fixed
		top 0
		height 100%

	&__part_link_true
		list-style-type none

	&__part_link_false
		color #777
		list-style-type upper-roman

	&__sub &__part
		font-size 0.8rem

	&__sub &__link_active_true
		background #E6E6E6

		&::before
			display none

	&__sub &__link
		padding 0.1em 0.4em
		color lighten($linkColor, 20%)

		&:hover
			color $hoverLinkColor

		&:active
			color $activeLinkColor

	&__sub &__part_link_false
		list-style-type none

	&__link
		position relative
		display inline-block
		margin-bottom 0.3em

		&_active_true
			color $activeLinkColor
			text-decoration none

			&::before
				position absolute
				left -0.5em
				content "\f105"
				font-family FontAwesome

.b-footer
	margin-top auto
	margin-left $contentsWidth
	padding 1.5rem 1rem
	border-top $border
	border-top-color $contentsColor
	background lighten($contentsColor, 50%)
	color #999
	font-size 0.9rem

	&__menu
		display inline-block
		list-style-type none

		li
			display inline-block

			&::before
				color #CCC
				content " | "

		a
			display inline-block
			padding 0.5em
			color #3B86C4

.b-articles
	display flex
	flex-basis 100%
	margin-left $contentsWidth
	color #000

	&__nav-cont
		fixed top $headerHeight bottom 0
		display flex
		align-items center

		&_hidden_true
			display none

		&_full_true
			top 0

	@media all and (max-width 75rem)
		&__nav-cont
			display none

	&__next
		right 0

	&__nav-control
		box-sizing border-box
		padding 0.1em 0.8em
		color #999
		text-align center
		font-size 3rem
		cursor pointer

		&:hover
			background #EEE
			color darken(@color, 50%)
			opacity 1

.b-article
	display none
	margin 0 auto
	padding 0.5rem
	width 50rem
	color #151515

	&_active_true
		display block

	a
		color #2974bb

		&:hover
			color $hoverLinkColor

		&:active
			color $activeLinkColor

	h1
		margin 1.6rem 0
		font 700 2.4rem\/1.5rem $logoFamily

	for $i in 2..6
		h{$i}
			cursor pointer
			$hoverColor = #222

			&:hover
				color $hoverColor
				text-decoration underline
				opacity 0.7

			&:active
				color lighten($hoverColor, 30%)

			&:hover::before
				position absolute
				left -1em
				display inline-block
				color lighten($hoverColor, 50%)
				content "\f0c1"
				font-weight normal
				font-family FontAwesome

.b-breadcrumbs
	margin 0
	margin-top 0.5rem
	list-style-type none

	li
		display inline-block
		margin-right 0.2rem

$codeMargin = 0.4rem 0
$code()
	border 1px #DDD solid
	border-radius 2px
	background #F7F4F2

.hljs
	margin $codeMargin
	tab-size 4
	$code()

body code
	white-space nowrap
	font-size 0.95rem
	font-family 'Roboto Mono', monospace
	$code()

.hljs code
	border 0
	white-space pre

.b-example
	position relative
	margin $codeMargin

	&__toggle
		display block
		list-style-type none
		text-align right

	&__link
		display inline-block
		padding 0.2em 0.6em
		font-size 0.9rem
		cursor default

		&_active_true
			background #F0F0F0
			color $hoverLinkColor

		&:not(&_active_true)
			color $linkColor
			cursor pointer

			&:hover
				color lighten(@color, 20%)

			&:active
				color lighten(@color, 30%)

	&__code
		> .hljs
			display none
			margin 0

			&:first-of-type
				display block
