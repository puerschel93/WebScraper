#modal-contacts
  z-index: 99997;
  width: 140%
  height: 140vh
  display: flex
  align-items: center
  position: fixed
  background-color: rgba(0, 0, 0, 0.4);
  left: 0
  top: 0
  margin: -20vh -20%
  @media $sm-and-smaller
    margin: 0
    height: 100vh
    width: 100%
.modal-contacts--wrap
  z-index 999999
  position relative
  left 0
  top 0
  width 100%
  height max-content
  border-radius 8px
  max-width 600px
  max-height 557px
  background-color #f9f9f9
  margin 0 auto
.modal-global
  width 100%
  max-width 666px
  border-radius 8px
  &__input
    width max-content
    padding 0 20px
    height 44px
    justify-content center
    align-items center
    border-radius 8px
    color black
    border none
    margin 8px
    &.textarea
      width 100%
      height 100px
    &.textarea::placeholder
      padding-top 8px
  &__head
    border-radius 8px
    padding 56px 32px 0
    width 100%
    display flex
    justify-content flex-start
    align-items flex-start
    background white
    @media $xs-and-smaller
      padding 56px 20px 0
  &__user
    padding-left 20px
  &__logo
    size(64px)
    min-height 64px
    min-width 64px
    display block
    border-radius 50%
    border: 3px solid #DEDEDE
    overflow hidden
  &__stars
    padding 10px 0
    display flex
    b
      margin-left 10px
  &__image
    size(100%)
    display block
  &__img
    size(100%)
  &__review
    font-weight bold
  &__recall
    padding-top: 32px
    //padding 32px
    width 100%
    background white
    @media $xs-and-smaller
      padding 32px 20px
  &__link
    size(100%, 64px)
    background: #F6F6F6;
    border: 1px solid #ECECEC;
    border-radius: 8px;
    display flex
    justify-content center
    align-items center
    color blackText
    transition()
    &:hover
      color accentColor
    svg
      size(20px)
      margin-right 12px
      fill accentColor
  &__main
    width 100%
    padding 32px
    background-color: #f9f9f9;
    @media $xs-and-smaller
      padding 32px 20px
  &__text
    max-width 60%
    width 100%
    @media $xs-and-smaller
      max-width 100%
  &__btn
    width 100%
    display flex
    justify-content space-between
    align-items center
    @media $xs-and-smaller
      flex-direction column
    .btn_global
      width 47%
      transition()
      @media $xs-and-smaller
        width 100%
        margin-bottom 10px
      svg
        transition()
        margin-right 13px
        size(20px)
        opacity .5
      &:hover
        border-color accentColor
        svg
          fill accentColor
          opacity 1
  &__box
    width: 100%
    padding-top 32px
  &__select
    width 100%
    .select-gl
      width 100%
      &__this
        max-width 100%
        width 100%
      &__value
        @media $xs-and-smaller
          font-size 12px
      &__item
        height 40px
        @media $xs-and-smaller
          height auto
          padding-top 5px
          padding-bottom 5px
        &:hover
          background-color bgGray
      &__list
        box-shadow 0 15px 40px rgba(0, 0, 0, 0.15)
  &__sub
    padding-bottom 24px
    font-weight bold
  &__submit
    padding-top 20px
    width 100%
    display flex
    justify-content flex-start
    align-items center
    .btn_global
      margin-right 15px
  &__close
    size(20px)
    position absolute
    top 50px
    right 30px
    justify-content center
    align-items center
    opacity .3
    transition()
    &:hover
      transform rotate(-90deg)
    svg
      size(100%)

.iziModal#modal-contacts
  background-color #F9F9F9

#dislike
  svg
    transform rotate(-180deg)
