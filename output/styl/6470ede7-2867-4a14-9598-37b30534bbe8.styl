.home-box
    text-align center
    background #f0f1f5
    #banner
        height 6rem
        overflow hidden
        position relative
        .ivu-carousel-arrow
            width 1rem
            height 1rem
            font-size 0.6rem
            .ivu-icon
                line-height 1rem
        .ivu-carousel-item, .ivu-carousel-list, .ivu-carousel-track
            height 100% !important
        .demo-carousel
            width 100%
            height 100%
            position relative
            cursor pointer
            >img
                width 100%
                height 100%
    .professional-field
        padding 1.1rem 0 1rem
        .professional-title
            height 0.38rem
            line-height 0.38rem
            border-bottom 0.02rem solid #E1E1E1
            h2
                padding 0.04rem
            a
                float right
                color #5160BA
        .professional-box
            width 12rem
            padding-top 0.5rem
            display flex
            flex-wrap wrap
            justify-content center
            .wrap
                display flex
                justify-content center
                align-items center
                width 24%
                height 3.4rem
                margin-bottom 0.3rem
            .expertise-box
                background #fff
                padding 0.16rem
                display inline-block
                width 100%
                height 3.1rem
                margin-right 0.15rem
                border-radius 0.03rem
                box-shadow 0 0.01rem 0.05rem 0 rgba(0, 0, 0, 0.2)
                div
                    margin-top 0.2rem
                    position relative
                    img
                        width 0.51rem
                        height 0.51rem
                    h2
                        margin 0.25rem 0
                        font-weight 400
                        font-size 0.18rem
                    p
                        text-align left
                        font-size 0.14rem
                        overflow hidden
                        text-overflow ellipsis
                        display -webkit-box
                        -webkit-box-orient vertical
                        -webkit-line-clamp 3
                    span
                        cursor pointer
                        border 0.01rem solid #fff
                        padding 0 0.1rem
                        width 1.1rem
                        height 0.32rem
                        line-height 0.32rem
                        border-radius 0.03rem
                        display block
                        margin 0.15rem auto
                        font-size 0.12rem
            .expertise-box:nth-child(4), .expertise-box:nth-child(4):hover
                margin-right 0
            .expertise-box:hover
                display inline-block
                background #3F51B5
                color #fff
                // transform scale(1, 1.1)
                height 3.4rem
                transition all 0.2s ease-in-out
                overflow hidden
                h2
                    color #fff
                img
                    transform translateY(-1.2rem)
                    filter drop-shadow(#fff 0 1.2rem)
            .contact-input, #container
                width 35rem
            .contact-qq
                text-align left
                background #3F51B5
                color #ffffff
                font-weight 700
                font-size 1.3em
                padding 0.5rem 0
                margin-bottom 1rem
                display block
            #container
                height 10rem
    .banner
        .ivu-carousel-dots-inside
            top 85%
        .anchor-box
            position fixed
            top 30rem
            right 1rem
            .ivu-anchor-ink:before
                background none
            .ivu-anchor-link-title
                border 0.02rem solid #fff
                width 0.13rem
                height 0.13rem
                border-radius 0.13rem
            .ivu-anchor-link-active
                .ivu-anchor-link-title
                    width 0.13rem
                    height 0.13rem
                    border-radius 0.13rem
                    background #3F51B5
                    border 0.02rem solid #3F51B5
#fp-nav ul li .active span
    background #3F51B5
.fp-tableCell
    display block
    vertical-align top
.all-main-box-third
    background #fff
.news-case-box
    padding 0.7rem 0 0.7rem
    .ivu-carousel-arrow
        font-size 14px
        .ivu-icon
            line-height 36px
    .ivu-carousel-dots-inside
        bottom 0.8rem
        li
            button
                background #ffffff
                width 0.1rem
                height 0.1rem
                opacity 1
            &.ivu-carousel-active
                button
                    background #3F51B5
                    width 0.1rem
    .public-box
        width 5.35rem
        .public-title
            height 0.6rem
            line-height 0.6rem
            border-bottom 0.02rem solid #E1E1E1
            margin-bottom 0.2rem
            h2
                font-size 0.24rem
                border-bottom 0.03rem solid #3F51B5
                display inline-block
                height 0.6rem
            a
                color #3F51B5
        .hot-case-item
            cursor pointer
            border 0.02rem solid transparent
            .img-box
                height 3rem
                img
                    width 100%
                    height 100%
            .box-content
                text-align left
                margin-top 0.1rem
                h2
                    font-size 0.17rem
                    line-height 0.36rem
                    overflow hidden
                    white-space nowrap
                    text-overflow ellipsis
                p
                    font-size 0.14rem
                    line-height 0.18rem
                    color #959595
        .news-main
            .news-list
                text-align left
                margin-top 0.26rem
                .news-item
                    display flex
                    align-items center
                    margin-top 0.26rem
                    &:hover
                        cursor pointer
                    .left
                        width 0.7rem
                        border-right 0.02rem solid #E8E8E8
                        flex-shrink 0
                        .left-title
                            font-size 0.22rem
                            line-height 0.22rem
                            color #111111
                        .left-remark
                            line-height 0.14rem
                            margin-top 0.05rem
                            font-size 0.14rem
                            color #959595
                            text-indent 0.2rem
                    .right
                        flex-shrink 0
                        flex 1
                        max-width calc(100% - 0.8rem)
                        margin-left 0.1rem
                        .right-title
                            font-size 0.17rem
                            line-height 0.2rem
                            color #111111
                            overflow hidden
                            white-space nowrap
                            text-overflow ellipsis
                            &:hover
                                text-decoration underline
                        .right-remark
                            font-size 0.15rem
                            line-height 0.2rem
                            color #959595
                            overflow hidden
                            white-space nowrap
                            text-overflow ellipsis
                            margin-top 0.05rem
                            &:hover
                                text-decoration underline
.banner-img
    height 4.2rem
    position relative
    img
        width 100%
        height 100%
    .text-content
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        color #fff
        display flex
        flex-direction column
        align-items center
        justify-content center
        .specialty-box
            p
                display inline-block
                font-size 0.24rem
        .service
            font-size 0.36rem
            margin-top 0.25rem
        .start-box
            p
                display inline-block
                font-size 0.24rem
                margin-top 0.25rem
            p:first-child
                border-bottom 0.02rem solid #ffffff
                margin-right 0.1rem
            p:nth-child(2)
                background #ffffff
                color rgba(163, 163, 163, 1)
                width 1.25rem
                height 0.38rem
                line-height 0.38rem
.article-none
    text-align center
    img
        width 1.25rem
        height 1.25rem
    p
        color rgba(221, 221, 221, 1)
        margin-top 0.3rem
        font-size 0.24rem
