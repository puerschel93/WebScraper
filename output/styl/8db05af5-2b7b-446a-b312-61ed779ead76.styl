.foot
    box-sizing border-box
    width 100%
    padding 0 64px 0 64px
    @media tablet-landscape-large
        padding 0

    &__top
        display flex
        box-sizing border-box
        width 100%
        padding 76px 120px 74px 120px
        background-color white
        @media laptop
            padding 70px 80px 66px 80px
        @media tablet-landscape-large
            flex-direction column
            align-items center
            text-align center
            padding 70px 40px 66px 40px
        @media tablet-portrait
            padding 70px 30px 66px 30px
        @media phone
            padding 70px 20px 66px 20px

    &__logo
        width calc(25% - 36px)
        margin-right 48px
        @media laptop
            width calc(25 - 31px)
            margin-right 42px
        @media tablet-landscape-large
            width 100%
            margin 0 0 30px 0
        
        & svg
            fill bright-cherry

    &__navigation
        width calc(25% - 36px)
        margin-right 48px
        @media laptop
            width calc(25% - 31px)
            margin-right 42px
        @media tablet-landscape-large
            width 100%
            margin 0 0 30px 0
        @media phone
            margin 0 0 40px 0       

    &__navigation-list
        margin 0
        padding 0
        list-style none
        @media tablet-landscape-large
            display flex
            justify-content center
            align-items flex-start
        @media phone
            flex-direction column
            align-items center
            justify-content flex-start

    &__navigation-item
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 21px
        font-weight 300
        color black
        @media laptop
            font-size 14px
            line-height 20px
        @media tablet-landscape-large
            margin 0 15px

        &:not(:nth-last-child(1))
            margin-bottom 28px
            @media tablet-landscape-large
                margin-bottom 0
            @media phone
                margin-bottom 10px

    &__navigation-link
        text-decoration none
        color inherit
        border-bottom 1px solid rgba(56 47 45 0)
        transition border-bottom .5s 0s ease 

        &:hover
            border-bottom 1px solid rgba(56 47 45 .25)

    &__contacts
        position relative
        width calc(50% - 24px)
        @media tablet-landscape-large
            width 100%

    &__contacts-list
        margin 0
        padding 0
        list-style none
        column-count 2
        column-gap 48px
        @media laptop
            column-gap 42px
        @media tablet-landscape-large
            display flex
            justify-content center
            align-items flex-start
            column-count auto
        @media phone
            flex-direction column
            justify-content flex-start
            align-items center

    &__contacts-item
        margin 0 0 30px 0
        @media tablet-landscape-large
            margin 0 15px
        @media phone
            margin 0

        &:not(:nth-last-child(1))
            @media phone
                margin 0 0 20px 0

    &__address
        display block
        margin-bottom 4px
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 21px
        font-weight 300
        color black
        @media laptop
            font-size 14px
            line-height 20px

    &__phone
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 21px
        font-weight 300
        color black   
        text-decoration none
        @media laptop
            font-size 14px
            line-height 20px

    &__bottom
        display flex
        flex-wrap nowrap
        align-items baseline
        box-sizing border-box
        width 100%
        padding 33px 0 30px 0
        @media laptop
            padding 28px 0px 25px 0px
        @media tablet-landscape-large
            padding 28px 40px 25px 40px
        @media tablet-landscape-small
            flex-direction column
            align-items center
        @media tablet-portrait
            padding 28px 30px 25px 30px
        @media phone
            padding 28px 20px 25px 20px

    &__site-copyright
        margin-right 50px
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 21px
        font-weight 300
        color black
        @media laptop
            font-size 14px
            line-height 20px
        @media tablet-landscape-small
            margin 0 0 20px 0

    &__social
        display flex
        align-items center
        margin-right 50px
        @media tablet-landscape-small
            margin 0 0 20px 0

    &__social-list
        display flex
        flex-wrap nowrap
        align-items center
        margin 0
        padding 0
        list-style none

    &__social-item + &__social-item
        margin-left 25px

    &__social-link
        & svg
            transition fill .5s 0s ease
            fill bright-cherry

        &:hover svg
            fill milk-cherry
    
    &__personal-data-link-wrapper
        @media tablet-landscape-small
            text-align center

    &__developer-copyright
        margin-left auto
        @media tablet-landscape-small
            margin 20px 0 0 0 

.developer-copyright
    &__name
        display inline-block
        margin-right 10px
        padding 4px 4px 2px 6px
        border-radius 3px
        background-color bright-cherry
        font-family "Helvetica-Neue"
        font-size 12px
        line-height 15px
        font-weight 700
        color white
        text-transform uppercase
        letter-spacing 2px
        text-decoration none
        transition background-color .5s 0s ease

        &:hover
            background-color milk-cherry

    &__hint
        display inline-block
        max-width 80px
        font-family "Helvetica-Neue"
        font-size 9px
        line-height 13px
        font-weight 300
        color middle-gray
        text-transform uppercase
        letter-spacing 2px
        vertical-align middle
