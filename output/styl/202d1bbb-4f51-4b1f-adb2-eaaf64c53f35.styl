.donaters
    width 100%
    height  1010px
    position relative
    overflow hidden
    // margin 20px 
    ul
        position absolute
        list-style none
    
        li.single-donater
            display  flex
            // display none
            margin-top 0
            margin-bottom 0
            margin-left 41px
            background none
            div.icon
                width 60px
                min-width 60px
                height 60px
                left 0
                top 0
                border-radius 50%
                padding 3px
                background #B35047
            .line
                width 200px
                min-width 200px
                height 4px
                margin 0 3px
                top 50px
                background: #BEBDBD
            p
                display none
            p.d-flex

                width 100%
                height 28px
                margin: 0
                font-family Roboto
                font-style normal
                font-weight normal
                font-size 24px
                line-height 28px
                color #000000
            &:nth-child(8n-6)
                margin-left 180px
                div.icon
                    width 100px
                    min-width 100px
                    height 100px
                    background: #42466D
            &:nth-child(8n-5)
                margin-left 220px
                div.icon
                    width 180px
                    min-width 180px
                    height 180px
                    background: #BFCECE
            &:nth-child(8n-4)
                margin-left 240px
                div.icon
                    width 115px
                    min-width 115px
                    height 115px
                    background: #CE9A98
            
            &:nth-child(8n-3)
                margin-left 42px
                div.icon
                    width 99px
                    min-width 99px
                    height 99px
                    background: #CE9A98
            &:nth-child(8n-2)
                margin-left 206px
                div.icon
                    width 60px
                    min-width 60px
                    height 60px
                    background: #BFCECE
            &:nth-child(8n-1)
                margin-left 72px
                div.icon
                    width 160px
                    min-width 160px
                    height 160px
                    background: #42466D
            &:nth-child(8n)
                margin-left 52px
                margin-bottom 106px
                div.icon
                    width 99px
                    min-width 99px
                    height 99px
                    background: #B35047
            @media(max-width:860px)
                margin: 0

    .two-rounds
        position absolute
        width 100%
        height 870px
        overflow hidden
        .round-big,
        .round-small
            position absolute
            overflow hidden
            border-radius: 0 100% 100% 0 / 0 50% 50% 0 ;
            border-left none
            left: 0px
        .round-big
            top 0
            width 360px
            height 720px
            border 15px solid #E1DFDF
            border-left none

        .round-small
            left 0
            bottom  0
            width 200px
            height 400px
            background-color #fff
            border 15px solid #E1DFDF
            border-left none
    
