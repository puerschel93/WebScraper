  color #febf14
  font-size 20px
  margin-right 5px

.next__index__afish
  cursor pointer
  color #febf14
  font-size 20px

.articleName__sub__container
  display: flex;
  align-items: center;
  margin 20px 0

.articleName__line__icon
  display: flex;
  align-items center

.news__default__container
  width: 1100px;
  background: #fff;
  padding: 10px 10px 10px 10px;
  margin-top: 35px;
  position: absolute;
  left: 0;
  display: flex;
  transition: 0.2s ease;
  margin-left: -250px;
  box-shadow: 0px 17px 14px -8px rgba(0,0,0,0.45);

.news__default__fade, .article__default__fade, .afisha__default__fade
  display: none

.news__default__col__first
  width 25%
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10px

.news__default__col__first>p:last-child
  margin-bottom: 0

.news__default__col__first>p
  transition: all 300ms ease

.news__default__col__first>p:before
  content: '';
  width: 5px;
  color: #febf14;
  font-weight: bold;
  margin-right: 5px;

.news__default__col__first>p:hover
  margin-left: 10px

.news__default__col__last
  width 75%
  display flex
  flex-direction column

.news__default__col__last__item__top
  width: 100%;
  overflow: hidden;
  display: flex;
  cursor: pointer;
  position: relative;

.menu__header__item:hover .news__default__col__last__item__top__img, .news__default__col__last__item__bottom__first:hover .news__default__col__last__item__top__img, .news__default__col__last__item__bottom__last:hover .news__default__col__last__item__top__img, .afisha__menu__header__item:hover .news__default__col__last__item__top__img
  transform: scale(1.1);

.menu__header__item:hover .news__default__col__last__item__top__title, .news__default__col__last__item__bottom__first:hover .news__default__col__last__item__top__title, .news__default__col__last__item__bottom__last:hover .news__default__col__last__item__top__title, .afisha__menu__header__item:hover .news__default__col__last__item__top__title
  color: #febf14

.menu__header__image
  height: 170px;
  overflow: hidden;

.menu__header__item
  margin-right: 10px
  width: 260px

.menu__header__item:last-child
  margin-right: 0

.afisha__menu__header__item
  margin-right: 10px
  width: 256px
  cursor: pointer;

.news__default__col__last__item__bottom
  width 100%
  display flex
  margin-top 10px

.news__default__col__last__item__bottom__first
  width 50%
  background #000
  height 160px
  margin-right 5px
  overflow: hidden;
  display: flex;
  align-items: center;
  cursor: pointer;
  position: relative;

.news__default__col__last__item__bottom__last
  width 50%
  background #000
  height 160px
  margin-left 5px
  overflow: hidden;
  display: flex;
  align-items: center;
  cursor: pointer;
  position: relative;

.news__default__col__last__item__top__img
  width: 100%
  transition: all 500ms ease

.news__default__col__last__item__top__shadow
  width: 100%
  height: 100%
  position: absolute;
  background-image: linear-gradient(-180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 45%, rgba(0,0,0,0.91) 78%, #000 100%);
  display: flex;
  align-items: flex-end;

.news__default__col__last__item__top__title
  color: #000
  margin-bottom: 0
  padding: 10px 0px
  font-family: 'Montserrat', sans-serif
  transition: all 300ms ease
  font-weight: 600;
  font-size: 13px;
  line-height: 20px

.afisha__default__col__slide
  display: flex;
  flex-wrap: wrap;
  height: 500px;
  overflow: auto;
