.xmas {
  height: 100%;
  width: 100%;
  position: fixed;
}

.bigNews__linear__gradient
  background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 45%, rgba(0, 0, 0, 0.91) 88%, rgb(0, 0, 0) 100%);
  width: 100%;
  height: 100%;

.reclam__mobile__blog
  display none

.row__div
  padding 0

.bigNews__category__link
  background: #da1738;
  padding: 5px 20px;
  font-size: 12px;
  font-weight bold
  position: absolute;

.bigNews__category__link>a
  color: #fff;
  padding: 5px 20px;

.smallNews__category__link
  background: #2196F3;
  padding: 5px 20px;
  font-size: 12px;
  font-weight bold
  position: absolute;

.smallNews__category__link>a
  color: #fff;
  padding: 5px 20px;

.smallnews2__category__link
  background: #ff6206;
  padding: 5px 20px;
  font-size: 12px;
  font-weight bold
  position: absolute;

.smallnews2__category__link>a
  color: #fff;
  padding: 5px 20px;

.count__index__category__link
  font-size: 16px;

.count__index__category
  background: #febf14;
  opacity 0
  margin-left 30px
  transition all 200ms ease
  visibility hidden

.count__index__category__label:hover .count__index__category
  opacity 1
  margin-left 0px
  visibility visible

.bigNews2
  margin-bottom: 10px;
  height: 250px;
  padding-left: 0;
  padding-right: 0;

.xmas .xmas-message {
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 2;
  -ms-transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  width: calc(90% - 6rem);
  height: calc(100% - 12rem);
  margin: 0 auto;
}
.xmas .from {
  position: absolute;
  bottom: 40px;
  width: 100%;
  z-index: 3;
  text-align: center;
}
.xmas .from div {
  font-family: "quimby-mayoral", sans-serif;
  color: #ffffff;
  font-size: 40px;
  margin-bottom: 10px;
}
.xmas .from .gc-link {
  display: inline-block;
  font-family: "brandon-grotesque", sans-serif;
  font-size: 24px;
  color: #ffffff;
  -webkit-transition: 400ms ease;
  transition: 400ms ease;
  text-decoration: none;
  text-transform: uppercase;
}
.xmas .from .gc-link:hover {
  color: #1cff94;
}
.xmas #xmas {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}

.gallery-image
    height 300px

.gallery-image img
    display block
    max-width 100%
    height auto

.newsPage__popular__item__a:hover
  color #5A5A5A

a:focus
  text-decoration none

.lastPost__item__image
  background-repeat no-repeat
  background-size cover
  background-position top
  width 100%
  height 200px

.footer__link__default
  justify-content: space-between;
  align-items: center;

.noresult__title
  color: #880a0a;
  text-align: center;
  font-weight: 600;
  margin-top: 30px;
  font-size: 15px;

.idiplom__link
  color:#0f0f0f;
  cursor default

.idiplom__link:hover, .idiplom__link:focus
  color:#0f0f0f;
  cursor default
  text-decoration none

.bigNewsBlock__title
  font-size: 25px;
  color: #f8f4f3;
  line-height: 32px;
  padding-left: 15px;
  padding-right: 20px;
  font-weight: 600;
  transition: 200ms ease all;

.bigNewsBlock__title>a
