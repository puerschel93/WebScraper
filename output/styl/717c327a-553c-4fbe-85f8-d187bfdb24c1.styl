.bigNewsBlock__title__a
  transition: 200ms ease all;

.bigNews:hover .bigNewsBlock__title__a
  color #febf1

.category__article__index
  display flex
  flex-direction column
  margin-bottom 15px

.articlePage__rubricsBlock__name
  margin-top 0
  font-size: 20px;
  font-weight: 600;
  text-align: left;
  border-bottom: 2px solid #febf14;
  padding: 10px 10px 10px 0;
  margin-left: 0;
  margin-right 10px
  width: 100%;
  color: #febf14;

.articlePage__rubricsBlock__name__col
  text-align left
  margin-top 22px

.articlePage__rubricsBlock__name__col__link
  padding 15px 5px
  color: #febf14;
  font-weight: bold;
  font-size 16px
  transition all 150ms ease
  margin-left: -12px;

.articlePage__rubricsBlock__name__col__link:hover, .articlePage__rubricsBlock__name__col__link:focus
  color #03a9f4

.articlePage__rubricsBlock__name__col__span
  background #64caf9
  margin-right 0
  transition all 150ms ease
  width 0
  opacity 0
  padding 0
