article
  box-shadow box-shadow-normal
  background #fff
  width 800px

  .post-content
    .time
      color color-secondary-text
      margin-top 8px
      margin-bottom -14.4px
      margin-left 2px

    padding 20px 20px 15px 20px
    margin-bottom 50px
    position relative
    @media screen and (max-width: 600px)
      padding-left 20px

  .gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1

    img
      min-width 100%
      max-width 100%
      height auto
      position absolute
      top 0
      left 0
      opacity 0

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
      &:before
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        content '\f054'
        right 10px

  header
    .title
      font-size font-size-1
      font-weight bolder
      a
        color color-primary-text
        text-decoration none
        &:hover
          color color-primary
          
    .icon
      width icon-size
      height icon-size
      margin-right icon-gap
      position absolute
      top 20px
      left 20px
      color color-primary
      @media screen and (max-width: 600px)
        display none
      &:before
        position absolute
        font 32px font-icon
        top 0
        left 0
        width 32px
        text-align center

  .entry
    text-align justify
    line-height 1.6
    p, blockquote, ul, ol, dl, table, iframe, h3, h4, h5, h6, .video-container
      margin-top 15px

    table
      border-collapse collapse
      border-spacing 0
      empty-cells show
      // border 1px solid lighten(color-border, 2)
      width 100%

      th
        white-space nowrap
        color color-primary
        font-weight 600
        background #eee

      td,
      th
        border 1px solid lighten(color-border-base, 2)
        padding 8px 16px
        text-align left

    figure.highlight
      table
        border none
        width auto
        border-collapse separate

    blockquote
      border-top 1px solid color-border-base
      border-bottom 1px solid color-border-base
      font-style italic
      font-family font-serif
      font-size 1.2em
      padding 0 30px 15px
      text-align center
      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0
        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em

    code, pre
      font-family font-mono

    a
      color color-primary
      text-decoration none
      &:hover
        color color-secondary
        text-decoration underline

    code
      background #eee
      color #666
      padding 0 5px
      margin 0 2px
      font-size 0.9em
      border 1px solid color-border-base
      border-radius 3px

    pre
      background #eee
      border 1px solid color-border-base
      margin-top 15px
      overflow auto
      padding 7px 15px
      border-radius 2px
      code
        background none
        padding 0
        margin 0
        border none
        border-radius 0

    ul, ol, dl
      margin-left 20px
      ul, ol, dl
        margin-top 0

    h1, h2, h3, h4, h5, h6
      color color-primary-text
      line-height 1.1em
      margin 1.1em 0
      font-weight bolder

    h1, h2
      padding-bottom 10px
      margin-top 20px

    h4, h5, h6
      font-weight normal

    h2
      font-size font-size-2

    h3
      font-size font-size-3

    h4
      font-size font-size-4
      
    h5
      font-size font-size-5

    h6
      font-size font-size-6
    
    p
      color color-regular-text
      line-height 1.6em
      margin 1.6em 0

      img
        display flex
        margin 0 auto
        max-width 80%
        max-height 500px

      .caption
        display block
        text-align center
        margin-top 5px
        color color-meta
        position relative
        font-size 0.9em
        padding-left 25p
    
    strong 
      color color-primary-text

    img, video
      max-width 100%
      height auto
      border none

    iframe
      border none

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
      iframe, object, embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0

    .pullquote
      float right
      border none
      padding 0
      margin 1em 0 0.5em 1.5em
      text-align left
      width 45%
      font-size 1.5em
