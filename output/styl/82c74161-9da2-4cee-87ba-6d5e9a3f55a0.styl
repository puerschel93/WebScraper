plomo = #F0F0F0
azul = #156FEA
blanco = #FFFFFF
gris = #666666
gris_azulino = #3E4E5F
gris_claro = #CCCCCC
verde = #A8DA00
rojo = #FD0707

body
    padding: 10px
    background url(fondo.jpg) no-repeat center center fixed
    font-size: 16px
    font-family: 'PT Sans Narrow', sans-serif

.titulo-cuadro
    background-color: #157CF5
    border: 1px solid gris_azulino
    box-shadow 0 2px 2px gris_azulino
    color: #FFFFFF !important
    font-size: 20px
    font-weight: normal
    height: 25px
    line-height: 25px
    margin-bottom: 3px
    margin-top: 10px
    padding-bottom: 5px
    padding-top: 5px 
    position relative
    width 100%

    &:before
        content "\e606"
        font-size 1.5rem
        font-family "icomoon"
        margin 0 5px 0 7px
        vertical-align bottom

.contenido_item
    background-color blanco
    width 100%
    border 1px solid gris
    margin-bottom 10px
    box-shadow 0 2px 2px gris_azulino

    .titulo_indicador
        background-color gris
        color blanco
        padding-top 7px
        padding-bottom 7px
        padding-left 10px
    
    .titulo_indicador_resumen
        background-color gris
        color blanco
        padding-top 7px
        padding-bottom 7px
        padding-left 10px   

        &:after
            content "\e604"
            font-size 1.3rem
            color blanco
            font-family "icomoon"
            margin 0 5px 0 7px
            vertical-align top             

    .indicadores
        height: 100%
        text-align: center
        width: 100%
        padding-top 4px
        
        .box_resumen
            background-color plomo
            padding 0
            margin 0 4px 5px
            border none
            height 88px  

            .ind_resumen
                background-color: #F0F0F0
                display: inline-block
                width: 48.5%
                overflow hidden
                height 88px  

                .titulo2_resumen
                    color: #2E82DD
                    font-size: 15px
                    padding-left: 10px
                    padding: 5px
                    text-align: left
                    width: 100%
                    font-weight bold

                .ind_vs_resumen
                    color: #565656
                    display: inline-block
                    font-size: 30px
                    margin-bottom: 15px
                    padding-left: 10px
                    text-align: left
                    width: calc(70% - 10px)

                .percent_resumen
                    color: #2E82DD
                    display: inline-block
                    font-weight bold
                    padding-bottom: 3px
                    padding-right: 5px
                    vertical-align: bottom
                    width: calc(30% - 10px)

                .tabla_carga_resumen
                    height 5px
                    margin 0
                    padding 0
                    border none
                    width 100%
                    position relative

                    .tabla_incompleto_resumen
                        background-color gris_claro
                        border none
                        display inline-block
                        float left
                        height 5px
                        margin 0
                        padding 0
                        width calc(100% - 38.7%)

                    .tabla_completo_resumen
                        background-color azul
                        border none
                        display inline-block
                        float left
                        height 5px
                        margin 0
                        padding 0
                        width calc(38.7%)

            
            .ind_producto
                background-color: plomo
                display: inline-block
                width: 48.5%
                overflow hidden
                padding 0
                margin 0
                border none

                .link_producto
                    width 50px
                    background-color: gris_claro
                    float right
                    padding 32px 0 29px 0
                    vertical-align top

                    &:before
                        color blanco
                        content "\e602"
                        font-size: 25px;
                        font-family: "icomoon";


        .ind
            background-color: #F0F0F0
            display: inline-block
            margin-bottom: 1px
            width: 48.5%
            overflow hidden
            height 88px

            .titulo2
                color: #2E82DD
                font-size: 15px
                padding-left: 10px
                padding: 5px
                text-align: left
                width: 100%
                font-weight bold

            .ind_vs
                color: #565656
                display: inline-block
                font-size: 30px
                margin-bottom: 15px
                padding-left: 10px
                text-align: left
                width: calc(70% - 10px)

            .percent
                color: #2E82DD
                display: inline-block
                font-weight bold
                padding-bottom: 3px
                padding-right: 5px
                vertical-align: bottom
                width: calc(30% - 10px)

            .tabla_carga
                height 5px
                margin 0
                padding 0
                border none
                width 100%
                position relative

                .tabla_incompleto
                    background-color gris_claro
                    border none
                    display inline-block
                    float left
                    height 5px
                    margin 0
                    padding 0
                    width calc(100% - 38.7%)

                .tabla_completo
                    background-color azul
                    border none
                    display inline-block
                    float left
                    height 5px
                    margin 0
                    padding 0
                    width calc(38.7%)

        .ind_importante
            background-color: #1272D9
            display: inline-block
            margin-bottom: 1px
            width: 48.5%
            overflow hidden
            height 88px

            .titulo2
                color blanco
                font-size: 15px
                padding-left: 10px
                padding: 5px
                text-align: left
                width: 100%
                font-weight bold

            .ind_vs
                color blanco
                font-size: 30px
                margin-bottom: 15px
                text-align: center

        .datos_pedidos
            margin 0 4px 4px 4px
            padding 0
            border none

            .encabezado
                width 100%
                background-color gris
                color blanco

                .nombre_tipo_pedido_vacio
                    display inline-block
                    width 32.5%
                    margin 0                    

                .nombre_tipo_pedido
                    display inline-block
                    width 32.5%
                    margin 0 0 5px 0
                    font-size 0.7rem
                    vertical-align middle

                    &:before
                        content "\e603"
                        display inline-block
                        font-size 0.8rem
                        color blanco
                        font-family "icomoon"
                        margin 0 3px 0 0
                        vertical-align bottom
            
            .fila_datos_pedido
                width 100%
                margin 4px 0 0 0
                padding 0
                
                .tipo_pedido
                    width 32.5%
                    margin 0
                    border none
                    background-color plomo
                    display inline-block
                    color azul
                    text-align left
                    vertical-align top

                    .texto_pedido
                        padding 5px 0 0 7px
                        margin-bottom 49px

                .porcent_pedido
                    width 32.5%
                    margin 0
                    border none
                    background-color plomo
                    display inline-block
                    vertical-align top
                    
                    .porcentaje_atiempo
                        font-size 30px
                        color verde
                        margin 15px 0 15px 0
                        padding 0
                        border none

                    .porcentaje_atrasado
                        font-size 30px
                        color rojo
                        margin 15px 0 15px 0
                        padding 0
                        border none

                    .tabla_incompleto_pedido
                        background-color gris_claro
                        border none
                        display inline-block
                        float left
                        height 5px
                        margin 0
                        padding 0
                        width calc(100% - 38.7%)

                    .tabla_completo_pedido_atiempo
                        background-color verde
                        border none
                        display inline-block
                        float left
                        height 5px
                        margin 0
                        padding 0
                        width calc(38.7%)

                    .tabla_completo_pedido_atrasado
                        background-color rojo
                        border none
                        display inline-block
                        float left
                        height 5px
                        margin 0
                        padding 0
                        width calc(38.7%)