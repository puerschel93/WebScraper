/* Link */
.link {
  @apply text-indigo-600 no-underline;
  &:hover {
    @apply text-yellow-500 underline;
  }
}
.scheme-dark .link {
  @apply text-indigo-300;
  &:hover {
    @apply text-yellow-400;
  }
}

/* Typography */
.prose {
  h1, h2, h3, h4, h5, h6 {
    @apply relative;
    .header-anchor {
      @apply absolute px-1 transform -translate-x-full opacity-0 no-underline;
      font-size: 0.8em;
      margin-top: 0.125em;
    }
    &:hover {
      .header-anchor {
        @apply opacity-100;
      }
    }
  }
}
@screen md {
  .prose {
    h1, h2, h3, h4, h5, h6 {
      .header-anchor {
        @apply px-2;
      }
    }
  }
}

/* Prism */
div[class*=language-] {
  @apply relative rounded-md !important;
  z-index: 1 !important;
  background: #2d2d2d !important;

  pre, pre[class*=language-] {
    @apply relative bg-transparent !important;
    z-index: 1 !important;
  }

  .highlight-lines {
    @apply absolute inset-0 w-full select-none !important;
    padding-top: 1.1rem !important;
    line-height: 1.5 !important;
    .highlighted {
      background-color: rgba(0, 0, 0, .66) !important;
    }
  }
}

/* Background Stars */
.scheme-dark {
  .bg-stars-1 {
    background-image: url('/images/stars-1.png');
  }
  .bg-stars-2 {
    background-image: url('/images/stars-2.png');
  }
}

/* Alert */
.alert {
  @apply flex items-center p-4 pl-3 my-6 border-l-4 rounded;
  .alert-icon {
    @apply self-start mr-3;
  }
  .alert-content {
    @apply flow-root -my-3;
  }
  b, strong {
    @apply text-current !important;
  }
  p, ol, ul {
    @apply my-3 !important;
  }
  li {
    @apply my-0 !important;
  }
  &.tip {
    @apply text-indigo-900 bg-indigo-100 border-indigo-600;
    .alert-icon {
      @apply text-indigo-600;
    }
    code {
      @apply bg-indigo-200;
    }
  }
  &.warning {
    @apply text-yellow-900 bg-yellow-200 border-yellow-500;
    .alert-icon {
      @apply text-yellow-500;
    }
  }
  &.danger {
    @apply text-red-900 bg-red-200 border-red-600;
    .alert-icon {
      @apply text-red-600;
    }
  }
}
.scheme-dark .alert {
  &.tip {
    @apply text-white bg-indigo-800 border-indigo-400;
    .alert-icon {
      @apply text-indigo-400;
    }
    code {
      @apply bg-indigo-700;
    }
  }
  &.warning {
    @apply text-white bg-yellow-900 border-yellow-500;
    .alert-icon {
      @apply text-yellow-500;
    }
  }
  &.danger {
    @apply text-white bg-red-900 border-red-400;
    .alert-icon {
      @apply text-red-400;
    }
  }
}
@screen md {
  .alert {
    @apply pl-4;
  }
}
