html, body
  background-color rgb(25, 30, 45)

.navbar 
  background-color rgb(25, 30, 45)

.navbar .links
  background-color transparent !important

.navbar .links .search-box input
  background-color rgb(30, 40, 70)

.navbar .links .search-box .suggestions,
.navbar .links .search-box .suggestions li
  background-color rgb(30, 40, 70)

.sidebar
  background-color rgb(25, 30, 45)

.sidebar a
  margin-bottom 0.5rem

.sidebar-heading > span
  border-bottom 0.15rem solid $accentColor

.sidebar-group > .sidebar-links > li > .sidebar-link
  margin-bottom 0.75rem

.sidebar-sub-header .sidebar-link
  border-left 0.15rem solid !important

.home .hero img
  max-width 450px !important
  padding 2rem 0

.custom-block
  background-color #43394e !important
  padding 1.25em 1.6em !important

.extra-class
  background-color rgb(18, 20, 30) !important

*::selection
  background rgb(245, 180, 90)
  color black

*::-webkit-scrollbar
  width 0.75em

*::-webkit-scrollbar-track
  box-shadow inset 0 0 4px rgba(0, 0, 0, 0.25)

*::-webkit-scrollbar-thumb
  background-color #3d3e4f
  border 0.1rem solid #343141
  border-radius 1rem
