@import "../base"

.bgimg
    position relative
    height 550px
    background-position center
    background-size cover

    .main
        width 100%
        position absolute
        center(100%)
        margin-top 150px
        font-size larger

        img
            width 150px
            height auto
            borderRadius(10px)
            margin-bottom 15px
            shadow(0, 2px, 5px, rgba(0, 0, 0, .3))

        *
            margin 3px 0

        h2, p
            color white

        p#val
            color rgb(80, 83, 83)

        ul
            color bgBlue

.container-fluid

    #mobile
        *
            background-color white
        p
            background-color transparent
        & > .row
            shadow(1px, 1px, 5px, rgba(0, 0, 0, .4))

.followers

    .nav
        li
            width 50%
            font-weight bold
            font-size large
            a, a:hover, a:focus
                border none
                borderRadius(0)
                margin-right 0
        li.active > a
            color bgBlue
        li:not(.active) > a
            color rgb(132, 132, 132)
            background-color rgb(172, 172, 172) !important

    .tab-pane
        ul
            overflow-x auto
            overflow-y hidden
            white-space nowrap
            margin 15px 0

        .fuser
            position relative

            input
                position absolute
                top 10px
                right 10px

            img
                width 130px
                height auto

            p
                position absolute
                right 15px
                font-size larger
                color white
                text-shadow -1px 1px 0 black
                &.name
                    bottom 10px
                &.lastname
                    bottom -8px

        .info
            color rgb(125, 125, 125)
            margin-top 10px

            p
                line-height 1.7em

            a
                color bgBlue
                display block
                text-decoration none
                margin-bottom 15px

.striped
    margin-top 25px

.map
    padding-bottom 20px

    h3
        font-weight bold

.collapsed
    padding-top 10px
    .panel, .panel-body
        border none !important
        borderRadius(0)
        -webkit-box-shadow: none
        -moz-box-shadow: none
        box-shadow: none

    .panel-heading
        padding 6px 15px

    .panel-title
        padding-bottom 2px
        font-size 20px
        color rgb(125, 125, 125)
        border-bottom 1px solid rgb(236, 233, 231)

    .open .panel-title
        border-bottom none !important
        color bgBlue !important

    .panel-group .panel + .panel
        margin-top 0

    a[data-toggle="collapse"] > span.fa
        background-color rgb(177, 177, 177) !important
        color white
        borderRadius(4px)
        width 26px
        height 27px
        text-align center
        font-size larger
        margin-top -6px
        transition(.3s, linear)

    a[aria-expanded="true"]

        .back
            opacity 1

        & > span.fa
            -webkit-transform: rotate(180deg)
            -moz-transform: rotate(180deg)
            -ms-transform: rotate(180deg)
            -o-transform: rotate(180deg)
            transform: rotate(180deg)

.back
    transition(.3s, linear)
    opacity 0
    float right
    color rgb(53, 53, 53) !important
    font-weight bold
    font-size 13px
    padding-top 8px

.panel-body[class*=event] > .generic > img
    borderRadius(0 !important)

.opinion
    .body
        font-size 20px !important
        padding-top 0 !important

        .left
            font-weight bold
            font-size larger !important
            margin-top -10px

        .content
            padding-top 0 !important

        & > a
            background-color rgb(62, 62, 62) !important
            padding 0 15px
            borderRadius(15px)
            color textGrey

.generic
    padding-bottom 15px
    margin-bottom 10px
    display block
    overflow hidden
    position relative

    &:after
        content ""
        height 2px
        background linear-gradient(to right, rgba(240, 237, 236, 1), rgba(0, 0, 0, 0) 95%)
        display block
        clear both

    img, .left, .right
        display inline-block

    img
        width 90px
        height 90px
        borderRadius(10px)
        float left
        margin-right 10px

    small
        color rgb(178, 178, 178)

    .body
        padding-top 10px
        padding-bottom 10px
        font-size 13px
        //todo: what to do with very small screen, img should dissapear
        width calc(100% - 101px)
        float left
        display inline-block

        p
            margin-bottom 0

        .left, .left a
            color rgb(76, 78, 80)

        .right
            span:first-child
                margin-right 20px
            .status.on:before,
            .status.off:before
                color white
                padding 3px 8px
                text-transform uppercase
                font-size smaller

            .status.on:before
                content 'activo'
                background-color rgb(50, 176, 227)

            .status.off:before
                content 'finalizado'
                background-color red

        .right, .content
            color rgb(177, 177, 177)

        .content
            padding-top 5px
            text-align justify
            strong
                font-style italic

.ratings
    margin-top 25px

    .rating
        padding-bottom 10px

        & > span
            padding-left 10%
            color textGrey
            font-weight bolder

        ul
            display inline-block
            float right
            padding-right 10%
            color rgb(50, 176, 227)
            margin-bottom 0

        &:last-of-type
            margin-bottom 100px

.cert
    p
        font-weight bolder
        font-size 16px

    img
        width 80%
        margin-bottom 40px

.social-user
    *
        background-color transparent !important

    h4
        font-weight bold

    a
        color rgb(104, 105, 109) !important

    a:hover, a:active
        color bgBlue !important

aside
    padding 15px
    color textGrey
    background-color rgb(211, 211, 211)

    .row
        background-color white
        borderRadius(4px)
        margin 0
        shadow(0, 2px, 2px, rgba(0, 0, 0, .2))

        &:not(:last-of-type)
            margin-bottom 10px

    .aside-container
        padding 10px

    .arrow
        border-top 1px solid lighten(textGrey, 70%)
        text-align center
        cursor pointer
        padding-top 5px
        padding-bottom 10px

        span
            color lighten(textGrey, 50%)
            -webkit-transform: rotate(90deg)
            -moz-transform: rotate(90deg)
            -ms-transform: rotate(90deg)
            -o-transform: rotate(90deg)
            transform: rotate(90deg)

    .ratings
        margin 0 !important
        padding 15px

        li
            padding-right 0

        span, ul
            padding-left 0 !important
            padding-right 0 !important

        .rating
            & > span
                font-weight initial !important

            &:last-child
                margin-bottom 30px

    .cert p
        font-weight inherit
        font-size inherit

#desktop
    margin-top -43px
    padding 0

    .nav
        border-bottom none

        li
            a, a:hover, a:focus
                padding 10px 15px
                background-color transparent
                border none
                outline none
                borderRadius(0 !important)
                text-transform uppercase

    & > .nav
        li
            padding-right 30px

            a, li a:hover, li a:focus
                color white

        li.active a
            border-bottom 4px solid rgb(0, 127, 180)

    .inner
        .nav
            li a
                padding 0 15px
                color rgb(150, 151, 152)
                font-weight bolder
                line-height .9em

            li.active a
                color lighten(bgBlue, 10%)

            li:not(:last-child) a
                border-right 1px solid rgb(76, 78, 80) !important

        .tab-pane
            padding 40px 0 !important

        .generic
            width 98%
            padding-bottom 0

            .content
                font-size small

    .tab-content
        background-color white !important

        .tab-pane
            padding 40px 25px

        .tab-container
            position relative

    #events
        .generic

            img
                width 200px
                height 150px
                borderRadius(0 !important)

        .body
            width calc(100% - 220px)
            padding-left 20px

            .right
                span:first-child
                    margin-right 0
            .status.on:before,
            .status.off:before
                padding 3px 20px

    #reviews
        .generic
            margin inherit
            .right > span,
            .body > a:last-child
                font-size small

            .body
                margin-bottom 15px
                & > a:last-child
                    color textGrey
                    background-color rgb(62, 62, 62)
                    borderRadius(15px)
                    padding 2px 15px

    #follow
        .generic
            ul
                padding-top 10px
                li
                    font-size smaller
                    margin-right 2%
                    color lighten(bgBlue, 10%)

            .body
                margin-bottom 15px

            .check
                position absolute
                right 30px
                top 30px

            input[type=checkbox]
                display none

                & + label span
                    display inline-block
                    width 30px
                    height 30px
                    background-color bgBlue
                    borderRadius(5px)
                    cursor pointer

                    span
                        opacity 0
                        transition(.2s)
                        width 10px
                        height 16px
                        border 4px solid #fff
                        border-radius 0
                        transform rotate(45deg)
                        margin 5px 10px
                        border-top-color transparent
                        border-top-style hidden
                        border-left-color transparent
                        border-left-style hidden

                &:checked + label span span
                    opacity 1

    .generic
        *
            font-size large

        small
            font-size .7em

@import 'media'