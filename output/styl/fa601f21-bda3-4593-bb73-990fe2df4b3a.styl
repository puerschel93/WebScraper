.development
  position relative
  top 0
  +small()
    top 48px
  .first-block
    position relative
    
    .top-shadow
      position absolute
      top -2px
      height 10px
      left 0
      right 0
      z-index 10
      background url("../img/development/top-shadow.png") center repeat-x
      
    .nav-elems
      position absolute
      bottom -25px
      height 49px
      left 0
      right 0
      text-align center
      z-index 11
      font-size 0
      +small()
        display none
      
      .nav-overview
        height 49px
        border 1px solid #195ca2
        display inline-block
        background-color #195ca2
        line-height 49px
        width 190px
        font-size 14px
        color #fff
        margin-left -1px
        cursor pointer
        position relative
        img
          display none
        
      .nav-overview.active
        background-color #fff
        color #195ca2
        img
          display inline-block
          position absolute
          top -12px
          right 77px
    
    .c-carousel
      width 100%
      position relative
      left 0
      top 0
      height 384px
      overflow hidden
      z-index 1
      +small()
        height 432px
      
      &__container
        position absolute
        left 0
        top 0
        width 300%
        
        .c-slice
          background-color #069
          height 384px
          float left
          overflow hidden
          +small()
            height 432px
            padding-bottom 20px
            
          &__right
            float right
            background-color #fff
            padding-left 0
            height 100%
            +small()
              max-height 160px
              text-align center
              float none
            
            .kit-middle
              position relative
              left 0
              top 0
              margin 0 auto 0 0
              height 100%
              display table
              width 100%
              max-width 480px
              +small()
                max-width 100%
              
              &-content
                display table-cell
                vertical-align middle
                height 100%
                
                p
                  a
                    text-decoration none
                    span.name
                      display block
                      margin-top 40px
                      color #000
                      font-size 1.1em
                      font-weight 500
                      +small()
                        margin-top 20px
                      
                      
                p.txt-align
                  text-align center
                  
                  
              .top-separator
                position absolute
                top 0
                bottom 0
                left 0
                width 80px
                z-index 4
                height 100%
                +small()
                  display none
                
                img
                  width 100%
                  height 100%
                
              img
                height 100%
                
              .img-container
                position relative
                left 0
                top 0
                overflow hidden
                +small()
                  height 160px
                  
                .play-video-icon
                  background url("../img/development/video-play-bg.png") center center no-repeat no-repeat
                  position absolute
                  top 0
                  left 0
                  right 0
                  bottom 0
                  z-index 3
                  cursor pointer
          &__right.no-bg
            background none
          &__right.no-bluebg
            +small()
              background none
            
                          
          &__left
            float left
            padding-left 0
            height 384px
            +small()
              height 432px
              float none
            
            .kit-middle
              display table
              height 100%
              max-width 480px
              width 100%
              margin 0 0 0 auto
              +small()
                max-width 100%
                display block
                margin 0
                text-align center
                padding 0 40px
              &-content
                display table-cell
                vertical-align middle
                height 100%
                
                h1
                  font-size 2em
                  font-weight 300
                  line-height 1.5em
                  color #fff
                  margin-bottom 20px
                  +small()
                    margin-top 20px
                  
                h1.upper
                  text-transform uppercase
                  
                  img
                    +small()
                      display none
                  
                h2
                  font-size 2em
                  font-weight 300
                  line-height 1.5em
                  color #fff
                  margin-bottom 20px
                  +small()
                    margin-top 20px
                  
                p
                  color #fff
                  
                  a
                    line-height 27px
                    padding-right 37px
                    display inline-block
                    color #fff
                    font-weight 400
                    margin-top 20px
                    font-size 1.25em
                    text-decoration underline
                    background url("../img/development/bottom-link-bg.png") right center no-repeat
                    +small()
                      font-size 1em
                    
                  span.watch-video
                    -moz-box-sizing border-box
                    -webkit-box-sizing border-box
                    -o-box-sizing border-box
                    -ms-box-sizing border-box
                    box-sizing border-box
                    margin-top 10px
                    display inline-block
                    line-height 21px
                    padding-right 31px
                    font-weight 500
                    cursor pointer
                    background url("../img/development/play-video-bg.png") right center no-repeat
                p.txt-align
                   text-align center
                  a.no-bg
                    background none 
                    margin-top 0
                    padding-right 0
                    span.name
                      display block
                      margin-top 40px
                      color #000
                      font-size 1.1em
                      font-weight 500
            .kit-middle.no-padding
              +small()
                padding 0
                
          &__left.h-160
            +small()
              height 216px
        .c-slice.third
          background url("../img/development/slide-3-bg.png") center center no-repeat #bad6e3
          +small()
            background-size 100% 100%
                  
                    
        
        
        
      
    
    