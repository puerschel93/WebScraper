.column-container
    padding: 30px 15px;
    h2 
        letter-spacing: 2px;
        padding: 10px;
        border-bottom: 1px dotted lightgray;
        background: rgba(255, 255, 255, 0.5);
    button
        background: white;
    textarea 
        border-radius: 0px;
        width: 100%;
        height: 50px;
        padding: 5px;
        font-family: Arial, Helvetica, sans-serif;
        border: 1px solid white;
        box-sizing: border-box;
        border-radius: 2px;
    textarea::placeholder
        font-family: Arial, Helvetica, sans-serif;
    textarea:focus-visible
        outline: 0px;
        box-shadow: 13px 3px 30px rgba(0, 0, 0, 0.2);


.tabs-container 
    width: 100%;
    display: grid;
    font-family: Arial, Helvetica, sans-serif;
    grid-gap: 10px;
    grid-template-columns: repeat(3, 150px);
    max-width: 500px;
    overflow: scroll;
    @media screen and (max-width: 1024px) 
        max-width: 320px
    .tab 
        padding: 15px;
        color: white;
        cursor: pointer;
        font-weight: 600;
        letter-spacing: 2px;
        text-align: center;
    
.listeningContainer 
    font-family: Arial, Helvetica, sans-serif;
    background: rgba(255, 255, 255, 0.5);
    box-sizing: border-box;
    font-weight: 600;
    margin-bottom: 10px;
    color: white;
    font-size: 14px;
    cursor: pointer;
    span 
        padding: 10px;
        box-sizing: border-box;
    span.sayThis
        color: white;
        font-weight: 800;
    .active 
        animation: pulse 5s ease-out infinite;
        width: 100%;
        display: block;
        padding: 5px;


.col-START
    background: #00B0FF
    button 
        color: #00B0FF
    textarea::placeholder
        color: #0071a4
.col-STOP
    background: #FF476D
    button
        color: #FF476D
    textarea::placeholder 
        color: #FF476D
.col-CONTINUE
    background: #00D687
    button 
        color: #00D687
    textarea::placeholder 
        color: #00D687


@keyframes pulse 
    0% 
        background-color: #606060;
    50%
        background-color: #2f2f2f;
    100%
        background-color: #606060;
