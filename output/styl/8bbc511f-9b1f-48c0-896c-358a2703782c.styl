  display : none;
}

@media (max-width: 769px) {


  .btn-logout {
    display : none;
  }
  .navbar{
    width : 100% !important;
  }
  .navbar .nav>li>a{
    padding: 10px 5px 8px;
  }
  li.btn-logout.nav-logout{
    display : block;
  }
  .navbar-collapse{
    width 100%;
    text-align : left;
  }
  .template-container{
    overflow-y : auto;
  }
  #template-create-data-container{
    width:100%;
    overflow-y:auto;
  }
  .modal{
    width : 100%;
    padding : 5px;
  }
  .database-container .pull-left {
    display: inline-block !important;
    width: 50% !important;
    float: none !important;
  }
  .database-container > div > div > table {
    margin-left : 10%;
  }
  .sample-grid{
    overflow-y : auto;
  }

  .pager{
    display : none !important;
  }
  .pager-mobile{
    display : block !important;
  }
  .pager-mobile .pager{
    display : block !important;
  }
}

@media (max-width : 400px){
  .database-container .pull-left {
    width: 100% !important;
  }

  .system-info-container label{
    width : 100% !important;
  }
  div.system-info-container
  {
    width : 100%;
  }
  .login-container{
    position: absolute;
    left: auto !important;

    margin-left: 0px !important;
    top: 50%;
    margin-top: -165px;
  }
  .clock-widget-container.pull-right{
    width: 100%;
    float: left !important;
  }
  .centered-500px{
    width: 100% !important;
    margin-left: 0px;
    left: auto;
    position: relative;
  }
  .pull-right.store-check-select{
    width : 100%;
  }
  .user_view{
    width: 100% !important;
    margin-left: 0px !important;
    left: auto !important;

    position: relative !important;

  }
}