/* FOOTER */
.footerTop
  border-bottom 1px dashed #000
.footerTop__title
  font-weight 200
  fz(72)
  line-height 1
  margin-left 10%
  text-transform uppercase
  color #23164B
  font-family: 'Oswald', sans-serif;
  background-color #fff
  width max-content
  margin-bottom -3px
.footerContent
  wrapper()
  padding-top cw(62)
  padding-bottom cw(44)
  display flex
  justify-content space-between
  align-items center
  xs(flex-direction, column)
  // justify-content space-around
  // align-items stretch
.footerContentColumn
  &:last-child
    margin-right 200px
    sm(margin-right, 0)
.footerContentLogoBox
  margin-left cw(170)
  sm(margin-left, 0)
  img 
    display block
    width 100%
    height auto
    object-fit cover
    xs(max-width, 70px)
    xs(margin-bottom, cw(30))
.footerContentColumnItem
  font-weight 400
  fz(18)
  line-height (23/18)
  color #393939
  margin-bottom 35px
  xs(text-align, center)
  &:first-child
    xs(margin-bottom, cw(5))
  &:last-child
    margin-bottom 0
  &--social
    xs(margin-top, 15px)
.footerContentColumnItem__title
  margin-bottom 3px
  xs(display, inline-block)
.footerContentColumnItem__text
  font-weight 300
  xs(display, inline-block)
  // xs(margin-left, 5px)
.footerContentColumnItemSocials
  a
    display inline-block
    margin-right 25px
    &:last-child
      margin-right 0
  img 
    display block
    transition all .3s
.footerContentColumnItemSocials a:hover img
  transform scale(1.2)
.footerBottom
  background #23164B
  padding 20px 0
  p
    color #fff
    wrapper()
    fz(16)
    text-align center