body 
    font-family: $font-family-lato-light
    color: $color-primary-blue
    strong
        font-family: $font-family-lato-bold
p
    line-height: 24px
h1.break-line, h2.break-line, h3.break-line, h4.break-line
    span
        display: block
h1
    color: $color-primary-blue
    font-family: $font-family-lato-regular
    font-size: 36px
    span
        color: $color-primary-orange
    +media-s()
        font-size: 26px
h2
    color: $color-primary-blue
    font-family: $font-family-lato-regular
    font-size: 32px
    span
        color: $color-primary-orange
    +media-s()
        font-size: 22px
h3 
    color: $color-primary-blue
    font-family: $font-family-lato-regular
    font-size: 18px
    span
        color: $color-primary-orange
h4 
    color: $color-primary-blue
    font-family: $font-family-lato-regular
    font-size: 14px
    span
        color: $color-primary-orange

.block-01
    padding: 0
    h2
        text-align: center
    h3
        text-align: center
    h4
        text-align: center
    p
        text-align: center
        padding: 0 20%
        +media-s()
            padding: 0 4% 

.p-block-01
    padding: 50px 0px
    +media-s()
        padding: 35px 0

.mb8
    margin-bottom: 8px

section.sf-container
    display: flex
    background: $color-white
    position: relative
    &.p66
        padding: 66px 0px
    &.pt50
        padding: 0
        +media-m()
            padding: 48px 0px 0 0
    &.--gray
        background: $color-gray-servife-100   !important
    +media-s()
        flex-direction: column;
    .ft-image
        width: 100%
        display: none
        +media-m()
            display: block
    .block-image
        width: 100%
        display: block
        +media-m()
            display: none

.bg-gray
    background: $color-gray-servife-100

.content
    max-width: $extra-large
    width: $extra-large
    margin: auto
    &.--felx
        display: flex
        > div
            width: 50%
            +media-m()
                width: auto
        +media-m()
            display: block
    .sf-content-info
        padding: 0
        .box-info
            padding: 40px 100px 0px 48px
            & h2 
                font-size: 28px
            +media-l()
                padding: 40px 50px 0 0
            +media-m()
                padding: 0
            &.--right
                padding: 40px 48px 0px 100px
                text-align: right 
                +media-l()
                    padding: 40px 0 0px 50px
                +media-m()
                    padding: 0
    .sf-content-img
        margin: unset
        +media-l()
            margin: auto
    +media-xl()
        margin: auto 4%
        width: auto
    +media-m()
        margin: auto 4%
        width: auto
    +media-s()
        margin: 0 6%
        width: auto
    
.separatingline
    background: $color-primary-orange
    border-style: none
    height: 5px
    width: 50px
    &.mb24
        margin-bottom: 24px
.separatingline_left
    margin-inline-start: initial
.separatingline_right
    margin-inline-end: initial

.show-mobile
    display: none
    +media-m()
        display: flex
    +media-s()
        display: block
.hide-mobile
    +media-m()
        display: none
    +media-s()
        display: none

.sf-container-ul 
    justify-content: flex-start
    flex-direction: row
    overflow-x: auto

ul.sf-content-item
    display: flex
    flex-direction: row
    justify-content: center
    +media-l()
        justify-content: start
    +media-m()
        justify-content: start
    +media-s()
        justify-content: start
    li
        list-style: none;
        padding: 20px
        width: 164px
        margin: 0 14px
        p
            text-align: center
            font-size: 14px
            line-height: 18px
            padding: 10px 0

ul.sf-content-list
    margin-bottom: 24px;
    &.--right
        text-align: right 
    li
        list-style: none
        padding: 4px 0px
        p
            padding: 0px
            margin: 0px

.center
    text-align: center

section.servicios
    padding: 35px 0 20px 0

section.clientes
    ul.sf-content-item 
        justify-content: start
        
        width: 1100px
        margin: 0 auto
        & li
            padding: 10px
            width: auto
            margin: 0
            align-self: center

.form-footer .content
    width: 500px
    +media-xl()
        margin: auto 
    +media-m()
        margin: auto 4%
        width: auto
    +media-s()
        width: auto
    p
        text-align: center
    