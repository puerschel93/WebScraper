.title
  display block
  font-family $fontTitle
  font-weight bold

  &_level_1
    margin-bottom 16px
    font-size 26px
    line-height 1.07692

    +above(980px)
      font-size 28px
      line-height 1.0588

  &_level_2
    margin-bottom 16px
    font-size 22px
    line-height 1.36

    +above(980px)
      margin-bottom 17px
      font-size 24px
      line-height 1.0714

  &_level_3
    margin-bottom 15px
    font-size 18px
    line-height 1.6

    +above(980px)
      font-size 20px
      line-height 1.0909

  &_level_4
    +above(980px)
      font-size 16px
      line-height 1.25

  &_level_5
    +above(768px)
      font-size 14px
      line-height 1.2857

  &_no-margin
