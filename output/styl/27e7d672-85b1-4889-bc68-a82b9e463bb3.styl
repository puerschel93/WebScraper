				width 100%
				height 100%
				display block
				&:before
					font-family icomoon
					content "\e66c"
					width 100%
					z-index 3
					font-size 2em
					color #1DA1F2
					top 0
					left 0
					position absolute
				&:after
					content ""
					background white
					width 30px
					height @width
					border-radius 4px
					position absolute
					top -7px
