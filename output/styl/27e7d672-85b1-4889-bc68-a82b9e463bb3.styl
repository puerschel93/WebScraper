
// header
header
	@media $large
		height auto !important
		nav
			box-shadow none
	.container
		position relative
	@media $$large
		height auto !important	
	.list 
		position absolute
		right 0px
		bottom 80px 
		height auto
		display block
		width auto
		li
			color black
			display block
			position relative
			heigh auto
			margin-left 1em
			overflow hidden
			transform rotate(9deg)
			transition transform 0.5s
			border-radius 0 12px 12px 0
			&:hover
				transform rotate(-9deg)
			a
				position relative
				display block
				border-radius 2px 12px 12px 2px
				font-size 22px
				margin 0 0 0 40px
				height 55px
				width auto
				line-height @height
				box-shadow initial
				font-weight 700
				z-index 1
				padding-left 1em
				background #D8385E
				color white
				text-shadow 2px 2px #000
				&:before
					content ""
					background inherit
					height 45px
					width @height
					position absolute
					border-radius 30%
					left -22px
					top 5px
					transform rotate(45deg)
					z-index -1
				&:after
					content ""
					height 15px
					width @height
					border-radius 50%
					background white
					position absolute
					z-index 2
					left -15px
					top 18px
				&:hover
					background color6
					color white
					text-decoration none

			&:hover
				background-color inherit
		a
			text-transform uppercase
			
	nav
		background url(imgs+'bgmenu.jpg') repeat-x
		height auto
		line-height @height
		transition background 1s
		box-shadow none
