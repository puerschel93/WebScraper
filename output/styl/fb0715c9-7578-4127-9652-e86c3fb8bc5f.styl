.main__shop-single
  & p,
  & span,
  & li
    color: #9e9e9e

.sidebar-title
  color: #292929
  font-size: 2.2rem
  font-weight: 700
  text-transform: uppercase
  margin: -.5rem 0 1.7rem

.categories
  & > li
    border-bottom: .1rem solid #f7f7f7
    margin-bottom: 1.4rem
    padding-bottom: 1.2rem
    & > a
      color: #9f9f9f
      transition: all 500ms ease
      &:hover
        color: #fdc716
      & > i
        display: inline-block
        font-size: 1.8rem
        padding-right: 1rem
        position: relative
        top: .1rem
      & > span
        display: inline-block
        padding-left: 1.5rem
        position: relative
        top: .05rem

.categories__items-list
  & > li
    margin-left: 3rem
    border-bottom: .1rem solid #f7f7f7
    padding: .5rem 0
    & > a
      color: #9f9f9f
      transition: all 500ms ease
      &:hover
        color: #fdc716
      & > i
        display: inline-block
        font-size: 1.8rem
        padding-right: 1rem
        position: relative
        top: .1rem
      & > span
        display: inline-block
        padding-left: 1.5rem
        position: relative
        top: .05rem

.product-tag
  text-align: center
  & > li
    display: inline-block
    margin: 0 .5rem 1rem
    & > a
      color: #9e9e9e
      font-size: 1.6rem
      font-weight: 400
      transition: all 500ms ease
      &:hover
        color: #fdc716
        text-decoration: underline

.latest-product
  & > li
    position: relative
    margin-bottom: 3rem
    &:hover
      & .overlay-box
        opacity: 1
        transform: rotateY(0deg) scale(1, 1)
    & .img-holder
      width: 7rem
      position: relative
      overflow: hidden
      display: table-cell
      vertical-align: top
    & .title
      display: table-cell
      vertical-align: top
      padding-left: 2rem
      & > h3
        margin: 0 0 .9rem
        color: #292929x
        font-size: 1.8rem
        font-weight: 600
        line-height: 2.6rem
        text-transform: uppercase
        & > a
          color: #292929
          font-size: 1.6rem
          text-transform: none
          transition: all 500ms ease
        &:hover > a
          color: #fdc716
      & > p
        & > span
          color: #01305e
          font-size: 1.8rem
        & > del
          color: #9e9e9e
          font-size: 1.6rem
          padding-left: 1rem
    & .overlay-box
      background-color: rgba(253,199,22, .85)
      text-align: center
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      color: #fff
      opacity: 0
      filter: 'alpha(opacity=0)'
      transition: all 450ms ease-out 0s
      transform: rotateY(180deg) scale(0.5,0.5)
      & .box
        display: table
        height: 100%
        width: 100%
        & .content
          display: table-cell
          text-align: center
          vertical-align: middle
          & a
            & i
              color: #292929
              font-size: 1.5rem

.product-content-box
  margin-top: -.4rem
  margin-bottom: 7rem
  & .content-box
    margin-left: -5rem
    & input
      margin-bottom: 1rem
    & .review-box
      margin: 0 0 1rem
      & ul
        display: inline-block
        margin-right: .5rem
        & li
          display: inline-block
          margin-right: 3px
          & i
            color: #fdc716
            font-size: 1.4rem
    & .price
      color: #01305e
      font-size: 2.2rem
    & .text
      border-top: .1rem solid #f7f7f7
      margin: 2.4rem 0 0
      overflow: hidden
      padding: 2.4rem 0 .9rem
    & .location-box
      margin: .4rem 0 1rem
    & .addto-cart-box
      & .input-group
        width: 100%
        height: 100%
        & .input-group-btn
          position: relative
          width: 100%
          height: 100%
          z-index: 100
        & .input-touchspin
          position: absolute
          top: 0
          right: 0
          width: 100% !important
        & .bootstrap-touchspin-up
          color: gray
          margin: 0
          padding: 0
          width: 3rem
          height: 2.5rem
          border-radius: 0
        & .bootstrap-touchspin-down
          color: gray
          margin: 0
          padding: 0
          width: 3rem
          height: 2.5rem
          position: absolute
          top: 2.5rem
          right: -3rem
          border-radius: 0

.delivery-info
  display: inline-block
  margin-bottom: 1rem

.product-tab-box
  & .tab-menu
    & span
      position: relative
      top: .1rem
      transition: all 500ms ease
    & li
      display: block
      float: left
      margin-bottom: -1px
      & a
        border: .1rem solid transparent
        border-radius: 0
        display: block
        margin-right: 1rem
        padding: 1.3rem 3.5rem
        color: #1f1f1f
        font-size: 1.8rem
        font-weight: 600
        text-transform: capitalize
        background: #f7f7f7
        transition: all 500ms ease
        &:hover
          background: #fdc716
          color: #fff
          border-color: #fdc716
          & span
            color: #fff
    & li.active
      & a,
      & a:hover
        background: #fdc716
        color: #fff
        border-color: #fdc716
      & span
        color: #fff
  & .tab-content
    clear: both
    & .tab-pane
      padding-top: 2rem
    & .product-details-content
      margin-top: -.5rem
      & p
        line-height: 3rem
    & .highlight
      margin: 4.2rem 0 0
      & li
        width: 100%
        position: relative
        padding-bottom: 1.2rem
        padding-left: 2.5rem
        &:last-child
          margin-bottom: 4rem
        &:not(.highlight-title)::before
          content: "\f00c"
          font-family: FontAwesome
          font-style: normal
          font-weight: normal
          color: #fdc716
          font-size: 1.4rem
          position: absolute
          top: 0
          left: 0
      &-title
        color: #292929
        font-size: 2.6rem
        font-weight: 600
        text-transform: uppercase
        margin: 0 0 2.8rem
        &::before
          content: "\f00c"
          font-family: FontAwesome
          font-style: normal
          font-weight: normal
          color: #fdc716
          font-size: 1.4rem
          position: absolute
          top: .8rem
          left: 0
    & .review-box
      & i
        color: #fdc716
        font-size: 1.4rem
      & .single-review-box
        border-bottom: .1rem solid #f7f7f7
        margin-bottom: 4rem
        padding-bottom: 3.2rem
        padding-left: 12rem
        position: relative
      & .img-holder
        left: 0
        position: absolute
        top: 1.4rem
        & img
          max-width: 100%
          height: auto
      & .text-holder
        & .top
          margin: 0 0 .8rem
          overflow: hidden
          & h4
            color: #292929
          & ul
            margin-top: .8rem
            padding-left: 2rem
            & li
              display: inline-block
              margin-right: .3rem
          & .review-date
            position: relative
            top: 1rem
            & > p
              color: #fdc716
        & .text
          & p
            margin: 0 0 1.5rem
          & a.reply
            color: #fdc716
            font-weight: 600
            text-transform: uppercase

.review-form
  padding-top: 1.6rem
  & .button
    margin-bottom: 2rem
    & h2
      color: #292929
      font-size: 2.6rem
      font-weight: 600
      text-transform: uppercase
      margin: 0 0 1.5rem
  & .add-rating-box
    & .add-rating-title h4
      color: #292929
      font-size: 1.6rem
      font-weight: 400
      margin: 0 0 1rem
      text-transform: none
    & ul
      margin: 2.5rem 0
      & li
        float: unset
        display: inline-block
        margin-right: 2rem
        cursor: pointer
        & i
          color: #fdc716
          margin-right: .3rem
          opacity: 0.3
          transition: all 500ms ease
        &:hover
          & i
            opacity: 1

.related-product
  & .slider-gallery__slide
    height: 100% !important
    & .slider-gallery__img
      height: 20rem
    & .title
      & span
        color: #01305e
        font-size: 1.6rem
      & del
        color: #9e9e9e
        font-size: 1.6rem
        left: .6rem
        position: relative
      & a
        background: #01305e none repeat scroll 0 0
        display: block
        height: 5rem
        line-height: 5rem
        text-align: center
        width: 100%
        color: #fff
        font-weight: 600
        margin: 2.5rem 0 0
        text-transform: uppercase
        transition: all 500ms ease
        text-shadow: .2rem .2rem .2rem rgba(0, 0, 0, 0.2)
        &:hover
          background: #fdc716
  & .slider-gallery__img:hover>.slider-gallery__container>.slider-gallery__box>.fa-eye
    line-height: 18rem

.flexslider
  width: 95%
  & .flex-next,
  & .flex-prev
    width: 5rem
    height: 5rem

.single-sidebar
  & .range-slider-price
    margin-bottom: 2rem
    border: none
    border-radius: .5rem
    box-shadow: none
    height: 1rem
    background: rgba(175, 175, 175, 0.5)
    & .noUi-base
      width: 99.5%
      overflow: hidden
      & .noUi-handle
        background: #fff none repeat scroll 0 0
        border: .2rem solid #01305e
        border-radius: 50% !important
        box-shadow: none
        cursor: pointer
        height: 1rem
        top: 0
        width: 1rem
        &-lower
          left: 0
        &-upper
          left: -1rem
        &::before,
        &::after
          width: 0
          height: 0
      & .noUi-connect
        width: 100%
        height: 1rem
        background: #fdc716
        border: none
        box-shadow: none
        border-radius: 10rem
      & .noUi-background
        width: 100%
        height: 1rem
        background: #d7d7d7
  & .form-group
    & p
      color: #9e9e9e
      display: inline-block
      font-size: 1.4rem
      font-weight: 400
      line-height: 4.5rem
      margin: 0
      text-transform: capitalize
      float: left
    & button
      background: #fdc716 none repeat scroll 0 0
      font-size: 1.4rem
      border: medium none
      color: #fff
      display: inline-block
      font-weight: 600
      outline: medium none
      text-transform: uppercase
      width: 8rem
      float: right
      text-shadow: .2rem .2rem .2rem rgba(0, 0, 0, 0.2)
    & input
      border: medium none
      color: #9e9e9e
      font-size: 1.4rem
      font-weight: 400
      outline: medium none
      width: 5rem