.p-servicios

	h1
		display block
		margin-top 0
		margin-bottom .1em
		text-align center
	ol.breadcrumb
		padding-left 0
		// @media $small-medium
		// 	margin-top 100px
		font-size 10px
		width 100%
		@media $small
			li
				padding-left 1px !important
				padding-right 1px !important
				&:before
					padding-left 1px !important
					padding-right 1px !important
		// 	margin-top 120px
		.active a
			color #d81a33
	&.p-detail
		h1
			@media $small-medium
				margin-top 0px
				font-size 1.2rem !important
			display block !important

		.cotizar,.whatsapp
			display none
		.fotos > .row
			display flex
			flex-direction column-reverse
		.train
			// border 1px solid green !important
			width 100%
			height 160px
			// overflow visible
			// vertical-align top
			div 
				border 1px solid #ccc
				max-width 33%
				margin-right 1%
				display inline-block
				vertical-align middle
				height 160px
				overflow hidden
				margin-left 1px
				a
					// border 10px solid yellow !important
					height inherit
					display flex
					align-items center
					justify-content center
					padding 1px
					img 
						height auto
						max-height 100%
						margin 0 !important
		.foto
			width 100%
			float none !important
			display block !important
		.main
			overflow hidden
			
					

	figure
		object-fit contain
		width 100%
		img.mfp-img
			max-height 100% !important
			// object-fit contain




	&.p-grid
		#menu_left
			// border 1px solid red
			padding 0
			margin 0
			border 0
			box-shadow none
			li.collapsible.collapsible-accordion
				overflow visible
				margin 0
				margin-bottom .5em
				border 0
				// box-shadow none
				a.collapsible-header
					border 0
					padding-left 1em
					border 1px solid #ccc
					&.active
						background #ee484d
						border-color #ee484d
						// background linear-gradient(to top, #ee484d 90%,#ccc)
						color white
				div.collapsible-body
					border 0
					border 1px solid #ccc
					padding 1em 1em 1em 0
					ul.submenu
						padding-left 1em
						> li 
							> a
								padding 5px 1em
								margin 0
								display block
					> ul.submenu
						> li 
							background white
							> a 
								font-size 1em
								margin-bottom 10px
								background darken(white,5)
								// border 1px solid red
							&.active > a
								background darken(white,5)
								color #ee484d
							> ul.submenu
								> li 
									> a
										font-size .8em
										margin-bottom 3px
										// border 1px solid yellow
									&.active > a
										// background darken(white,10)
										color #ee484d
					
				
		
			> li.collection-item
				border 1px solid #ccc
				// border 1px solid #000
				padding .5em
				> a
					padding .5em !important
				&.active
					background white
					> a
						background darken(white,5)
						// background #000
						color #ee484d
		// .productos_itemm
		.responsive
			padding-bottom 1px
		.card
			overflow hidden
			margin-bottom .5em
			.card-image
				// height 200px
				overflow hidden
			.card-content h4
				text-align center
				font-size 1.1em
			.card-title
				// display none
				height 30px
				overflow hidden
				text-align center
				@media $small
					font-size .8em
			.card-action
				height 23px
				.subname
					display block
					text-align center
					color color2
					font-weight bold
					&:after
						content "%"
						
		.cabecera
			@media $small-medium
				margin-bottom 0
			h2
				text-transform initial
				font-size 1.7rem
				line-height 110%
				margin 2.1rem 0 1.68rem 0
				@media $small-medium
					// border-bottom 1px solid #0077bd
					font-weight normal
					margin 0
					margin-top 30px
			.cent
				padding-left 45px
				@media $small-medium
					padding-left 0
		.menu_post_trash
			.collection-item
				
				> a
					font-weight bold
					text-transform uppercase
					font-family Orbitron
					color white !important
					background color1
					// padding 0 0 0 1em !important
					// height 1.5em
					// line-height 2.2em
				a 
					color color1
					display block
					padding .4em 0 .4em 1em
				&.active
					background #fff
					> a
						// font-weight bold
						background color2
						color #fff !important
				> .submenu,> .collapsible-body
					> li
						padding-left 1.5em
						&.active
							a
								// color color1
								font-weight bold
								icomoon('e64f')
								&:before
									color color1
									margin-left -1em
				.collapsible-body
					padding 1rem 0rem !important
		.line_grupos
			background-color initial !important
			margin-top -25px
			@media $medium-small
				.collection-item
					padding-top 0em

		// &.p-2
		// 	.collection-item a
		// 		padding-top .3em !important
		// 		padding-bottom .3em !important

	
	.post.project
		@media $large
			img.responsive-img, video.responsive-video
				margin -1px
				max-width 100.5%			
		.row
			position relative
			// &:before
			// 	content ""
			// 	position absolute
			// 	width 1px
			// 	background-color #0077bd
			// 	left 50%
			// 	top 3em
			// 	height 98%
			// 	@media $small-medium
			// 		width 0
			&.cabecera:before
				width 0
			@media $large
				> div > article
					margin-top 0px
					margin-bottom 0px
		.more
			line-height 21px 
			& + a
				color grey
				&:hover
					color #0077bd
			

	.cabecera
		display flex
		@media $small
			display block
			text-align center
			// margin-bottom -3em
		h1
			font-size 1.7rem
		// 	text-align center
		@media $small
			h1
				font-size 1.7em
				// margin-bottom 0
		.cparts
			flex-grow 1
			flex-shrink 1
			flex-basis auto
			@media $small
				display inline-block
				// background-color red
		.contacts
			display inline-block
			color #0076bb
			padding 1em 0 0 0
			text-align right
			@media $small
				padding-top 0
			span
				font-size 1em
				margin 0.5em
				@media $small
					margin 0.5em 0.5em 0.5em 1em
					// display block
				
				&.whatsapp a
					&:before
						color #333
						margin-right 0.5em
					icomoon('e900')
					// text-align left
				&.phone
					background url(imgs+'phone.jpg') no-repeat 0px 2px
					padding-left 18px
					font-size 1.3em
					@media $small
						font-size .8em
						background-position 0px -2px
						display none
					// text-align left
				&.email
					font-size 1.3em
					background url(imgs+'email.jpg') no-repeat 0px 4px	
					padding-left 27px
				&.cotizar
					background url(imgs+'pencil.jpg') no-repeat 0px 2px
					padding-left 20px
			
	article.card-panel
		// min-height 500px
		// min-height 345px
		min-height 370px
		margin-bottom 20px !important
		@media $small-medium
			min-height 0

	#cotizar
		// p
		// 	display none
		h2
			padding-bottom 0
	.actions
		display none
		position fixed
		bottom 0px
		z-index 2
		width 100%
		// display inline-block
		ul
			margin 0 auto
			padding 0
			display flex
			width 100%
			// margin 0 auto
			text-align center
			li
				flex-grow 1
				flex-shrink 1
				flex-basis auto
				a
					display block
					box-shadow inset 0px 0px 50px 0px #09598a
					text-shadow: 3px 1px 5px #09598a
					height 55px
					line-height @height
					// min-width 300px
					width 100%
					// margin-right 1%
					// padding-left 5px
					display inline-block
					background-color #0d9aee
					color #fff
					border-radius 25px 25px 0 0
					text-align center
					// position relative
					cursor pointer
					font-size 50px
					@media $small
						font-size 30px
					&:hover
						text-decoration none
					&:before
						content ""
						width 44px
						height 38px
						top 10px
						left -7px
						position relative
						// top 20px
						// left 50px
						display inline-block
						// margin-left 10px
						background-repeat no-repeat
						@media $small
							background-size @width @height
					&.email:before
						background-image url(imgs+'proy-email.png')
					&.call:before
						background-image url(imgs+'proy-llamar.png')
	@media $small
		.actions
			display block
		// footer
		// 	visibility hidden
			
	
