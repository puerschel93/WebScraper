	.card-title h2
		padding 0
		margin 0 0 .7em 0
		font-size 1.7em

	article.card-panel
		// box-shadow none
		.parent-container > li
			@media $large
				min-height 220px
			.card
				transition border-radius .5s, box-shadow .5s, background-color .5s, margin .2s
				box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)
				background-color darken(white,5)
				border-radius 15px
				&:hover
					box-shadow 0 12px 15px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19)
					background-color white
					border-radius 0
					@media $large
						margin -1px
				.card-content
					padding-top 0
					padding-bottom 0
					font-weight bold
					text-transform uppercase
	#cotizar
		.card-title
			h2
				margin-top 0
				margin-bottom 0
				padding-top 0
		form
			.btn
				margin-bottom 1em
			// .input-field
			// 	margin-top .1rem
				
.p-descuentos,.p-importaciones
	&.p-grid
		.breadcrumb
			display none
		h1
			text-align center
			display block
		.cabecera
			margin-bottom 0
