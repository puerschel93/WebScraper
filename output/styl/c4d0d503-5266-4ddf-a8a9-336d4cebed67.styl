@import url('https://fonts.googleapis.com/css?family=Roboto&display=swap')

*
  margin 0
  padding 0
  list-style none
html,
body
  height 100%
body
  display: flex
  justify-content center
  align-items center
  background #333
  color white
#app
  width 1280px
  height 800px
  position relative
#home
  width 100%
  height 100%
  background linear-gradient(90deg, #FFEDF7 64%, #003164 64%)
  color black
  display flex
#home-left
  width 454px
  height 100%
  margin-left 85px
  padding-top 48px
  .home-input
    width 445px
    height 56px
#home-left-first
  margin-top 145px
  font-size 24px
  line-height 28px
  font-family 'Roboto', sans-serif
  color #003164
  img
    width 48px
#home-left-time
  width 454px
  height 206px
  color #FF4384
  font-family 'Roboto', sans-serif
  font-weight bold
  text-align center
  font-size 160px
  line-height 176px
#home-left-list
  width 445px
  height 115px
  font-family 'Roboto', sans-serif
  color #003164
  margin-top 107px
  li
    width 445px
    .playbtn
      margin-left auto
  p
    text-align right
    color #FF4384
#home-center
  width 540px
  height 100%
  margin-left 26px
  .home-clock
    width 540px
    height 540px
    background #FF4384
    border-radius 50%
    display flex
    justify-content center
    align-items center
    position absolute
    top 130px
    img
      width 96px
    img:hover
      width 110px
      cursor pointer
#home-right
  width 210px
  height 100%
  .todo
    position absolute
    top 48px
    right 85px
  .analytics
    position absolute
    top 132px
    right 85px
  .ringtones
    position absolute
    top 216px
    right 85px
  p
    position absolute
    top 587px
    right 85px
    font-family 'Roboto', sans-serif
    writing-mode vertical-lr
    font-size 32px
    color white
    font-weight bold
#Settings
  width 1280px
  height 800px
  background #003164
  display flex
#Settings-left
  width 560px
  height 100%
  font-size 36px
  font-family 'Roboto', sans-serif
  font-weight bold
  img
    margin-right 8px
  .todo
    position absolute
    top 48px
    left 85px
  .analytics
    position absolute
    top 132px
    left 85px
  .ringtones
    position absolute
    top 216px
    left 85px
  .clock
    width 350px
    height 175px
    background #FFEDF7
    border-radius 350px 350px 0 0
    position absolute
    left 85px
    bottom 0
    color black
#Settings-center
  width 445px
  height 100%
#Settings-right
  width 275px
  height 100%
  .close
    position absolute
    top 48px
    left 1147px
  p
    position absolute
    top 587px
    right 85px
    font-family 'Roboto', sans-serif
    writing-mode vertical-lr
    font-size 32px
    color white
    font-weight bold
#TODOLIST
  padding-top 48px