.footer
  margin-top: 135px;
  margin-bottom: 30px;
  border-top 1px solid #E3E9EF;
  &__content
    width: 80%;
    margin: 0 auto;
    margin-top: 40px;
    display: flex;
    justify-content: space-between;
    &__info
      width: 45%;
      &__text
        font-size 16px;
        line-height: 24px;
        color #8392A6;
        &__small
          font-size 16px;
          line-height: 24px;
          color #8392A6;
          margin-top: 12px;
    &__terms
      &__heading
        font-size 16px;
        font-weight 700;
        line-height: 20px;
        color #3B4858;
      &__policy
        margin-top: 10px;
        &__link
          text-decoration none;
          color #8392A6;
          font-size 16px;
          line-height: 30px;
          transition $transition;
        &__link:hover
          color #1FB6FF;
      &__payment
        &__link
          text-decoration none;
          color #8392A6;
          font-size 16px;
          line-height: 30px;
          transition $transition;
        &__link:hover
          color #1FB6FF;
      &__service
        &__link
          text-decoration none;
          color #8392A6;
          font-size 16px;
          line-height: 30px;
          transition $transition;
        &__link:hover
          color #1FB6FF;
    &__support
      &__heading
        font-size 16px;
        font-weight 700;
        line-height: 20px;
        color #3B4858;
      &__email
        color #8392A6;
        font-size 16px;
        line-height: 30px;
        margin-top: 10px;
      &__feedback
        padding 10px 35px;
        margin-top: 15px;
        border 1px solid #E3E9EF;
        background-color #FFFFFF;
        color #8392A6;
        font-size 16px;
        font-weight 600;
        line-height: 20px;
        transition $transition;
        border-radius 6px;
      &__feedback:hover
        background-color #1FB6FF;
        color #FFFFFF;
    &__follow
      &__heading
        font-size 16px;
        font-weight 700;
        line-height: 20px;
        color #3B4858;
      &__icons
        margin-top: 15px;
        display: flex;
        justify-content: space-between;
        width: 150%;
        align-items: center;
        &__facebook
          border 3px solid #E3E9EF;
          border-radius 25px;
          transition $transition;
          .fa-facebook-f
            padding 13px 17px;
          &__link
            text-decoration none;
            color #8392A6;
            transition $transition;
        &__facebook:hover
          background-color #1FB6FF;
        &__facebook:hover .footer__content__follow__icons__facebook__link
          color #FFFFFF;
        &__gplus
          border 3px solid #E3E9EF;
          border-radius 25px;
          transition $transition;
          .fa-google-plus-g
            padding 13px 12px;
          &__link
            text-decoration none;
            color #8392A6;
            transition $transition;
        &__gplus:hover .footer__content__follow__icons__gplus__link
          color #FFFFFF;
        &__gplus:hover
          background-color #1FB6FF;
        &__twitter
          border 3px solid #E3E9EF;
          border-radius 25px;
          transition $transition;
          .fa-twitter
            padding 13px 13px;
          &__link
            text-decoration none;
            color #8392A6;
            transition $transition;
        &__twitter:hover .footer__content__follow__icons__twitter__link
          color #FFFFFF;
        &__twitter:hover
          background-color #1FB6FF;