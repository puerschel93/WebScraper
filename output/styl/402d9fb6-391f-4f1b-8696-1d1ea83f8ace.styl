@import 'variables.import'
@import 'mixins.import'

@import 'globals.import'

@import 'sidebar.import'
@import 'sidebar_table.import'

@import 'modals.import'
@import 'overlay.import'
@import 'layers.import'

@import 'typeahead.import'

body
html
#grits-map
  height 100%
  width 100%

body
  primaryFont()

.bootstrap-datetimepicker-widget.dropdown-menu
  position fixed
  font-size small

.element-details-container
  position absolute
  bottom 10px
  right 20px
  min-width 300px
  border-radius 4px
  border 5px solid $blue-transparent
  font-family $fonts
  .tab-content
    padding 10px
    background $whiteBG
  .tab-pane
    min-height 140px
    .row
      margin-bottom 3px

.element-details-nav
  position relative
  background $whiteBG
  border-bottom 1px solid rgba(226, 226, 226, 1)
  > li
    width auto
    float left
    border-right 1px solid #E2E2E2
    &:last-of-type
      border-right 0
    > a
      color $blue
  .active
    background #EFEFEF
    font-weight bold

.element-details-close
  line-height inherit
  position absolute
  right 10px
  top 50%
  transform translate(0,-50%)

.marker-icon
  cursor pointer

.tab-content
  overflow-x hidden
  overflow-y auto

.nav-tabs > li.active > a
.nav-tabs > li.active > a:hover
.nav-tabs > li.active > a:focus
  background-color $blue
  color white

.filter-tab-pane
  padding 20px
  .filter-group
    margin-right 10px
    margin-left 10px
    margin-bottom 25px

.filter-tabs
  flexTabs(none, $l-gray, $ll-gray)

.tableDivider
  height 3px
  background-color $blue
  border-left solid #ddd 1px

.date > span.input-group-addon
  background-color #ddd

#filterContainer
  font-size small
  background-color white
  padding 0px
  border-radius 5px
  filter-container-width()

#sidebar-layer
  layer-container-width()
  box-shadow 0 0px 0px rgba(0,0,0,0)

.advFilHdr
  text-align center
  background-color lighten($m-gray,10%)
  color #444
  padding .3em
  margin-bottom 0

.dow
  padding 0

.applyFilter
  padding 5px

.tokenized
  word-wrap normal

.tokenized.main
  max-width 300px
  background $ll-gray

.token-input
  font-size 1em

.hamburger
  float left
  margin 2px

.row-status-bar
  margin 15px 5px 0 5px

.col-status-bar
  padding 0
  > div
    padding-right 0
    padding-top 5px

.status-bar
  border-top solid 2px #b7b7b7
  background-color #d7d7d7
  line-height 30px

.status-bar-text
  padding-right 0
  padding-left 0
  color #333

.status-bar-val
  font-weight bold
  padding-left 2px

// .spinner
//   position absolute
//   right 15px
//   top 17px
//   font-size 16px
//   color #666
//   z-index 2000

.leaflet-container
  background-color #CDD2D4

.leaflet-top.leaflet-left
  z-index 1004
.leaflet-top.leaflet-right
  z-index 1003
.leaflet-bottom.leaflet-left
  z-index 1002
.leaflet-bottom.leaflet-right
  z-index 1001

#mapLegendPanel
  width 180px

p.intro
  line-height 1.5
  margin 5px 0 35px 0
  font-size larger

.legend
  font-size smaller
  font-weight bold
  margin-left 20px
  display inline-block
  position relative
  top -22px
  text-align left

.legendBlock
  width 17px
  height 17px
  vertical-align middle
  display inline-block

#container
  width 100%
  height 100%

.title
  margin-top 0
  margin-bottom 10px
  text-align center

.notice
  margin 10px 0 5px 0
  line-height 1.5
  text-align center

.info
  padding 6px 8px
  font 14px/16px fonts
  background white
  background rgba(white, 1)
  box-shadow 0 0 15px rgba(black, 0.2)
  border-radius 5px

@media all and (max-width: 480px)
  /* styles for iPhone/Android landscape (and really narrow browser windows) */
  .notice
    font-size 11px

@media all and (max-width: 320px)
  /* styles for iPhone/Android portrait */
  .notice
    font-size 11px

@media all and (max-width: 240px)
  /* styles for smaller devices */
  .notice
    font-size 11px

.my-legend
  padding 40px 40px 40px 35px
  .legend-title
    margin-bottom 8px
    font-weight 600
    font-size 20px

  .legend-scale ul
    margin 0
    padding 0
    list-style none
    display flex

  .legend-scale
    ul
      li
        display block
        flex-grow 1
        text-align center
        font-size 80%
        list-style none

  ul.legend-labels
    margin-top 5px
    border-radius 4px
    li
      span
        display block
        height 15px

  .legend-source
    font-size 70%
    color #999
    width 100%
    margin-top 20px
    text-align center

  a
    color #777


.leaflet-heatmap-layer
  z-index -1

.leaflet-control-zoom
  clear none // allows horizontal stacking with filter

.filter-control
  clear none // allows horizontal stacking with zoom

.searchBar
  position relative
  width 100%
  border-left 0
  border-right 0
  background $ll-gray
  border-top 4px solid $blue
  border-bottom 1px solid $blue
  font-size 1em

.slider.slider-horizontal
  width 225px
  cursor pointer

.slider-wrapper
  max-width 225px
  margin-bottom 50px
  &:last-of-type
    margin-bottom 0

.slider
  &.slider-horizontal
    .slider-handle
      margin-left -7px
      margin-top -6px

.slider-handle
  width 22px
  height 22px
  border 2px solid white
  background lighten($blue, 10%)
  transition background .1s
  &:focus
    outline 0
    border-color darken($blue, 30%)
    background darken($blue, 10%)
  &:active
    background $green
    border-color white

.min-slider-handle
  opacity 1

.max-slider-handle
  opacity 1

.slider-track
  background-image: linear-gradient(to bottom, $ll-gray 0%, $l-gray 100%)

.slider-selection
  background-image none
  background-color rgba(51, 122, 183, 0.25)

#loadMore
  margin-right 0px

#sidebar-question-tab
  position absolute
  bottom 0px

#sidebar-search-tab
  position absolute
  top 140px

#sidebar-slider-tab
  position absolute
  top 200px

#sidebar-layer-tab
  position absolute
  top 260px

.tt-input
  height 30px
  font-weight 20px

.tokenfield
  border-radius 0
  box-shadow none
  &.form-control
    &.input-sm
      padding-left 40px
      border 0

.input-group-sm .token
.tokenfield.input-sm .token
  min-height 26px
  font-size 16px
  margin-top 2px
  margin-bottom 0

 .slider-range-labels
   margin-top 3px

.sliderValIndicator
.sliderRangeIndicatorRight
.sliderRangeIndicatorLeft
  font-size .9em
  color darken($d-gray, 20%)

.sliderValIndicator
  text-align right
  font-weight 600

.sliderRangeIndicatorRight
.sliderRangeIndicatorLeft
  margin-top 3px
  width 50%
  word-wrap break-word

.sliderRangeIndicatorRight
  text-align right

.advancedFilterRow
  padding 10px 15px 30px 10px

.sidebar-tabs > li:hover
  color #333

.limit
  > div
    display inline-block
    vertical-align middle

.limitSearchTitle
  padding 0
  margin 0px 10px 0px 0px

.limitInput
  width 75px
  padding-left 0
  padding-right 10px

.circle
  float right
  width 20px
  height 20px
  border-radius 50%

.sidebar-tabs > li:hover
  color #333

.sidebar-highlight
  color #333

.action-menu
  display none
  list-style none
  position absolute
  bottom 90px
  left 60px
  padding 0
  white-space nowrap

.action-menu li
  display inline-block
  margin-left 2px

.action-menu div:hover
  opacity .50

.action-menu-btn
  background-color $blue
  color white

.action-menu-btn-selected
  background-color #333
  opacity .75

.action-menu span
  font-size smaller

canvas
  z-index -1

.datatable-container
  background-color white

.datatable-row
  margin-top 2px
  margin-bottom 2px
  display inline-block
  width 100%

.datatable-heading
  padding 5px
  font-size 18px
  color $blue
  font-weight bold

.risk-analysis-container
  background-color white
  margin-bottom 20px

.datatable-hr
  border-bottom 2px solid $blue

.progress
  border-radius 0

.filter
  display flex
  flex-direction column
  flex 1 1 auto

.filter-header
  background-color #eee
  padding 5px
  min-width initial
  border-radius 2px

.filter-label
  font-size 1.1em
  font-weight bold

.filter-group
  white-space nowrap
  padding 2px

.filter-footer
  @extend .sidebar-footer
  font-size .8em

.filter-wrapper
  flex 1 1 auto
  padding 0 25px 25px
  overflow-y auto

.nearby
  display flex
  align-items center
  justify-content center
  width calc(100% + 50px)
  margin-right -25px
  margin-left -25px
  input
    margin-left 3px
    margin-right 3px

.filter-row
  display inline-block
  width 100%
  margin-top 10px
  margin-bottom 10px
  &.nearby
    display flex
    align-items center
    justify-content center
    width calc(100% + 50px)
    margin-right -25px
    margin-left -25px
    font-size .9em
    input[type=number]
      margin-left 5px
      margin-right 5px
      box-shadow none
      border 1px solid $m-gray
      padding 5px
      text-align center
    input[type=checkbox]
      margin-top 0
      margin-right 5px
      margin-left 0
  .progress
    margin-bottom 0

.limit-bar
  display inline-block
  width 100%
  margin-top 10px
  margin-bottom 10px

#element-details
  display none
  position relative
  bottom 15px
  right 15px
  z-index 1000
  font-size smaller


.layers-title
  margin-bottom 8px
  font-weight 600
  font-size 20px

#mode-toggle
  display none /* hide until i18n loads in startup.coffee */

.dataTable th
  text-align center

.dtHidden
  display none

.share-btn-container
  padding-bottom 20px
  font-size larger
  margin-right 25px

.share-btn
  cursor pointer
  padding 0 5px 0 5px
  i
    color white !important  /* overrides mixins.import */

.share-link-container
  display none
  background-color white
  opacity 1
  margin 0 -15px 0 0
  padding 10px 0 15px 0

.share-link
  width 100%
  padding 0
  line-height 1.3em

.toast-error, .toast-info, .toast-warning, .toast-success
  width 70% !important
  min-width 300px !important

.toast-message
  text-align center !important

.simulator-running
  position relative
  right -5px
  font-size larger
  color #333
