.screenWrapper
  display: flex;
  max-height: 100%;
  position: relative;
  height: 100%;
  overflow: hidden;

.screen
  display flex
  flex-direction column
  //max-height 100%
  //height 100%
  width 100%

.head
  padding 12px 16px
  background white
  border-radius 24px
  border 1px solid rgba(0,0,0,.1)
  margin-bottom 24px
  display flex
  align-items center
  font-size 18px
  font-weight 500

.actions
  display flex
  align-items center
  gap 16px
  margin-left auto

.actionTrigger
  margin-right 16px
  display flex
  align-items center
  justify-content center
  cursor pointer
  width 44px
  height 44px
  border-radius 10px
  background #F1F1F1

  svg
    width 28px
    height 28px
    color #9BABC5

.columns
  display flex
  gap 16px
  overflow-x auto
  flex-grow 1

.column
  display flex
  flex-direction column
  flex-shrink 0
  max-height 100%
  //padding-top calc(46px + 16px)
  position relative

  &.small
    width 200px

  &.medium
    width 250px

  &.big
    width 300px

  .title
    width 100%
    min-height 46px
    color white
    font-size 14px
    display flex
    align-items center
    padding 0 16px
    background var(--columnColor, var(--brand))
    border-radius 16px
    margin-bottom 16px
    position relative
    //position fixed
    //top 0
    //left 0

    .floater
      position absolute
      bottom calc(0px - 28px + (28px - 16px) / 2)
      left 0
      opacity 0
      z-index  100
      transition opacity .2s

    .floater:hover
      pointer-events all
      opacity 1

    .floaterVertical
      position absolute
      width 28px
      right calc(0px - 28px + (28px - 16px) / 2)
      top calc((100% - 28px) / 2)
      opacity 0
      z-index  100
      transition opacity .2s

    .floaterVertical:hover
      pointer-events all
      opacity 1

  .icon
    width 24px
    height 24px
    display flex
    align-items center
    justify-content center
    color white
    margin-right 4px

    svg
      height 100%

  .name
    color white
    font-size 14px
    border 0
    background transparent
    max-width 180px

    &:active, &:focus
      outline none

  .count
    width 30px
    height 30px
    background rgba(256,256,256,.15)
    border-radius 8px
    color white
    font-size 14px
    display inline-flex
    justify-content center
    align-items center
    margin-left auto

  .colorTrigger
    width 16px
    height 30px
    color white
    font-size 14px
    display inline-flex
    justify-content center
    align-items center
    margin-left 8px
    cursor pointer

    svg
      color white
      fill white
      height 24px

  .scrollable
    overflow-y auto
    display flex
    flex-direction column
    min-height 50px

  .cards
    display flex
    flex-direction column
    flex-wrap nowrap

.add
  min-width 46px
  height 46px
  background white
  border-radius 16px
  display flex
  align-items center
  justify-content center
  font-size 24px
  border 1px solid rgba(0,0,0,0.1)
  color #9babc5
  font-weight 300
  cursor pointer
  color var(--brand)
