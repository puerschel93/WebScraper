{prefix}-fixedheader
  position: relative
  height: 424px
  width: 1470px
  margin-left: 38px
  overflow: hidden
  background: url(imgPath + 'vpsbanner.png')
  background-position: top center
  background-size: cover
  box-shadow: inset 0 -8px 0 colors.accent

  &:before,
  &:after
    position: absolute
    content: ''
    top: 0
    width: 0
    height: 0
    border-style: solid

  &:before
    left: -1px
    border-color: colors.background transparent transparent transparent
    border-width: 424px 200px 0 0

  &:after
    right: -1px
    border-color: transparent transparent colors.background transparent
    border-width: 0 0 424px 200px

  .bg-corner
    height: 429px
    position: absolute
    transform: skew(-27deg, 0deg)
    width: 1000px
    bottom: -22px
    animation: 0.5s ease 1s normal forwards 1 running bg-corner
    background-color: #FFC21D
    opacity: .6
    left: 100%
    -webkit-animation: bg-corner 0.5s forwards
    -webkit-animation-delay: 0.5s
    animation: bg-corner 0.5s forwards
    animation-delay: 1s


{prefix}-fixedheader.vps-fixed-header
  background-size: auto

/* ----------------------------
 Tabs
---------------------------- */

{prefix}-tabs
  position: relative
  transform: translateX(0)
  transition: transform duration.tabs ease
  width: 7400px

  &-header
    // margin-bottom: 30px
    h1
      margin: 0

    &-title
      width: 600px
      margin-top: 169px

      h1
        margin: 0 0 5px 0

      h2
        margin: 0 0 30px 0

  &-container
    position: relative
    width: 1087px
    height: 200px
    // padding-top: 28px
    overflow: hidden

  &-icons
    clearfix()
    margin-top: 33px

    &.no-indicator div.active:after
      border-bottom-color: transparent

    div
      position: relative
      float: left
      cursor: pointer
      margin-right: 40px

      &.active:after
        position: absolute
        bottom: -22px
        left: 50%
        margin-left: -11px
        content: ''
        width: 0
        height: 0
        border-style: solid
        border-width: 0 11px 11px 11px
        border-color: transparent transparent colors.accent transparent
        transition: border-bottom-color .3s ease

  &-controls
    noUserSelect()
    position: absolute
    margin: auto
    width: 65px
    height: 90px
    top: 0
    bottom: 0
    right: 0

    &-wrapper
      position: absolute
      top: 0
      right: -2px
      z-index: depth.pageContent
      background: colors.backgroundTransparent
      width: 100px
      height: 200px

      &:before,
      &:after
        content: ''
        position: absolute
        width: 0
        height: 0
        border-style: solid
        border-width: 0 0 200px 100px

      &:after
        border-color: transparent transparent colors.backgroundTransparent transparent
        left: -99px
      
      &:before
        border-color: transparent transparent (colors.backgroundTransparent - #222) transparent
        left: -100px

    div
      position: relative
      cursor: pointer
      float: right
      background: colors.darkText
      color: colors.background
      line-height: 40px
      text-align: center

      &:hover
        background: colors.darkText + #111
        &:before
        &:after
          border-bottom-color: colors.darkText + #111

    &-next
      width: 40px
      margin-bottom: 10px

    &-prev
      width: 65px

    &-next:before
    &-prev:before
    &-next:after
    &-prev:after
      content: ''
      position: absolute
      width: 0
      height: 0
      border-style: solid
      border-width: 0 0 40px 20px
      border-color: transparent transparent colors.darkText transparent

    &-next:before
    &-prev:before
      left: -20px

    &-next:after
    &-prev:after
      left: -19px

