/* ----------------------------
 Reviews
---------------------------- */

{prefix}-reviews, .solutions-el
  clearfix()
  margin: 40px auto 75px

  .col
    float: left
    width: 32%
    margin-right: 2%

  .col:last-of-type
    margin-right: 0

  .review-item
    position: relative
    padding: 28px
    background: #fff
    border-bottom: 1px solid #bebebe
    margin-bottom: 40px
    color: colors.darkText

    img
      margin: 5px

    &:before,
    &:after
      position: absolute
      content: ''
      left: 20px
      width: 0
      height: 0
      border-style: solid
      border-width: 20px 20px 0 0

    &:after
      border-color: #fff transparent transparent transparent
      bottom: -20px

    &:before
      border-color: #bebebe transparent transparent transparent
      bottom: -21px

  a.review-item
    display: block
    
    &:hover
      text-decoration: none
      
    &:visited
      color: colors.darkText
    
  .review-item-md
    height: 44px

  .review-item-lg
    height: 184px

  .review-author,
  .review-author-premium
    position: absolute
    height: 40px
    color: #fff
    bottom: -20px
    right: 15px

  .review-author
    background: colors.darkText

  .review-author-premium
    background: #3d95d2

  .review-author-name
    line-height: 40px
    font-weight: bold
    margin: 0 10px 0 4px
    float: right

