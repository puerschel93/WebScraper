/* ----------------------------
 Plans
---------------------------- */

{prefix}-popular-plans
  position: relative
  height: 340px
  background: colors.accent
  overflow: hidden
  box-shadow: inset 0 -8px 0 colors.darkText

  img
    float: right

  .btn
    position: absolute
    right: 36px
    top: 40px

  .col
    float: left
    margin-right: 40px

  .col-lg
    width: 260px

  .col-sm
    width: 120px

  &:before
  &:after
    position: absolute
    content: ''
    top: 0
    width: 0
    height: 0
    border-style: solid
    border-color: colors.accent transparent transparent transparent
    border-width: 332px 166px 0 0

  &:before
    right: 250px

  &:after
    right: 249px

  &-wrapper
    margin-top: 28px
    margin-bottom: 40px

  &-feature
    margin-bottom: 26px

    .feature-name
      boldFont()
      font-size: 18px
      color: colors.darkText

    .feature-desc
      meduimFont()
      font-size: 12px
      text-transform: uppercase
      color: colors.background

  &-container
    padding: 32px 32px

    h3
      font-size: 24px
      margin-top: 0
      margin-bottom: 31px

  &-controls
    clearfix()
    mediumFont()
    font-size: fontSize.menu
    width: 96%
    margin: 0 auto

    div
      noUserSelect()
      position: relative
      float: left
      line-height: 56px
      margin-right: 50px
      color: colors.link
      cursor: pointer

      &:hover
        color: colors.link + #333

      &.active
        color: colors.darkText

      &.active:before
        position: absolute
        top: 0
        left: 50%
        margin-left: -11px
        content: ''
        width: 0
        height: 0
        border-style: solid
        border-width: 11px 11px 0 11px
        border-color: colors.darkText transparent transparent transparent

      &:after
        position: absolute
        right: -28px
        content: '/'
        color: colors.subtleText

      &:last-of-type:after
        content: ''

