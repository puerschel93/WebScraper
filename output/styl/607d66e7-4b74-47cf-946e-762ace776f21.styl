@media (max-width: 1170px)
	.header__top
		height: auto
	.header__top .location
		height: 100%
	.header__top .location::after
		content: none
	.header__top--wrapper
		height: auto
		background: header_blue_color
	.header__top .nav__item--long
		width: 200px
	.consult
		flex-direction: column
		align-items: center
	.consult__icon,
	.consult__text
		margin-right: 0
		margin-bottom: 20px
		text-align: center
	.consult__form
		margin-top: 0
	.default__consult .consult__form
		margin-left: 0
	.default-page__btns
		justify-content: space-around

@media (max-width: 1140px)
	.header__middle
		padding: 10px 0
	.header__middle--wrapper
		flex-direction: column
		justify-content: center
		padding: 0
	.logo
		margin: 10px 20px
	.header__middle--wrapper .group
		justify-content: center
		margin: 0 auto
	.menu__list
		flex-direction: column
	.menu__item
		margin-bottom: 2px
		&:not(:first-child)
			margin-left: 0
		&:last-child
			margin-bottom: 0
	.menu__item.hasDropdown::after
		content: none
	.menu__item .dropdown
		position: absolute
		width: 100%
	.menu__item.hasDropdown::before
		content: ''
		position: absolute
		sprite: $arrow_dropdown
		right: 10px
		top: 50%
		transform: translateY(-50%)
		z-index: 1
	.promo
		justify-content: center
	.promo__item
		width: calc(50% - 40px)
	.contacts .item__body
		word-break: break-word
@media (max-width: 1085px)
	.footer__bottom--right
		background: brand_blue_color
	.footer__bottom--left::after
		content: none


@media (max-width: 1024px)
	.header__top--wrapper
		height: auto
	.header__top .nav > .hasDropdown:hover > .dropdown
		display: none
	.header__middle--wrapper
		padding: 0
	.services__body
		justify-content: space-around
	.contacts__info
		justify-content: space-around
	.articles--wrapper
		justify-content: space-around
	.tabs--wrapper
		flex-direction: column
	.tabs__tab::after
		content: none
	.tabs__tab.active
		padding-top: 0
	.banners--wrapper
		justify-content: center
	.news_list__row
		justify-content: center
		flex-wrap: wrap
	.news_list__item
		border: none !important
		padding-x: 0 !important
		margin: 12px
	.default-page--wrapper
		flex-direction: column
	.default-page--right
		padding-left: 0
	.default-page__content
		padding-right: 0
	.default-page__consult
		padding: 10px
	.default-page__consult .consult
		flex-direction: column
		justify-content: center
	.default-page__consult .consult__form
		margin-left: 0
		flex: 1 0 auto
@media (max-width: 900px)
	.slider.single-item
		display: none
	.promo
		margin-top: 40px
	.seporator
		display: none
	.section__header
		display: none
	.services,
	.news
		width: 100%
	.calc
		background-image: none
		background-color: #CEE8FA
	.contacts__form .form__group
		flex-direction: column
	.contacts__form .form__group:nth-of-type(2)
		margin-bottom: 0
	.contacts__form .form__label:first-child
		margin-right: 0
		margin-bottom: 20px
	.contacts__form .form__label:last-child
		margin-left: 0
	.contacts__form .form__checkbox
		margin-bottom: 20px
		margin-right: 0
		text-align: left
	.banks--wrapper,
	.default--wrapper
		flex-direction: column
	.banks__content,
	.default__content
		border-top: 0
	.default--right
		padding-left: 0
	.default__content
		padding-right: 0
	.footer__bottom--right
		justify-content: flex-start
		margin-top: 10px
		margin-bottom: 10px

@media (max-width: 768px)
	.default__btns
		flex-direction: column
		justify-content: center
		align-items: center
	.default__btns > a:not(:first-child)
		margin-top: 10px
	.img-float-left
		float: none
		margin: 0
		margin-bottom: 10px

@media (max-width: 700px)
	.header__middle--wrapper .group
		flex-direction: column
		align-items: flex-start
	.header__middle--wrapper .group__item:last-child
		margin-x: auto
	.header__search .search .button--contrast
		display: none
	.section--header
		flex-direction: column
		& .aside
			margin-bottom: 30px
	.calc
		flex-direction: column
		padding: 20px
	.calc__icon
		margin-right: 0
		margin-bottom: 20px
	.calc .button
		margin-right: 0
		margin-bottom: 20px
	.calc__text
		text-align: center
	.contacts__form
		padding-left: 0
		padding: 20px
	.contacts__form .form
		padding: 0
		text-align: center
	.contacts__form .girl
		display: none
	.title--comments
		margin-bottom: 50px;
	.calc__form .form__inputs
		flex-direction: column
	.title--label
		min-width: initial
	.modals .modal__default .modal__dialog
		padding: 30px
		max-height: 100vh
		width: 100%
	.modals .modal__default .modal__title
		padding-left: 80px
		margin-bottom: 10px
	.modals .modal__default .modal__title.call-back-icon::before
		left: 0
	.modals .modal__default .modal__title.comments-icon
		padding-left: 0
	.modals .modal__default .modal__title.comments-icon::before
		content: none	
	.modals .modal__default .modal__text
		line-height: 1.2
	.modals .modal__default .modal__text,
	.modals .modal__default .modal__form .modal__wrapper
		margin-bottom: 10px
	.modals .modal__default .modal__form .modal__label:last-child
		margin-bottom: 0
	.modals .modal__default .modal__form .modal__checkbox
		margin-bottom: 20px
		max-height: 568px
@media (max-width: 600px)
	.header__top .container
		width: 100%
		padding: 0
	.header__top .nav__item
		margin: 0
	.container
		width: 100%
		padding: 0 10px
	.header__top--wrapper
		flex-direction: column
		height: auto
	.header__top .location
		flex: 1 1 auto
		position: relative
		top: initial
		justify-content: center
		padding-right: 0
		width: 100%
		height: auto
		left: 0
	.header__top .nav
		flex: 1 1 auto
		flex-direction: column
		flex-wrap: nowrap
		height: auto		
		margin-left: 0
	.header__top .nav__link
		text-align: center
	.header__top .nav__item:not(:first-child)
		margin-left: 0
	.header__top .nav__item--long
		width: auto
	.header__search .search
		width: 100%
	.breadcrumbs__list
		flex-direction: column
	.modals .modal__location .modal__dialog
		width: auto
	.promo
		position: relative
		flex-direction: column
		align-items: center
		width: calc(100% + 20px)
		padding: 10px 0
		top: -40px
		left: -10px
	.promo__item
		margin: 10px
	.consult__form > div
		flex-direction: column
	.consult__label:first-child
		margin-right: 0
	.consult__label:last-child
		margin-left: 0
		margin-top: 30px
	.consult__checkbox
		margin-bottom: 30px
	.services__header .title
		padding-left: 90px
	.services__header .title::before
		top: 5px
		left: 15px
	.title--other-news::before
		content: none
	.title--other-news
		padding-left: 0
	.title--label
		left: 10px
	.contacts__info
		flex-direction: column
		align-items: center
	.contacts .item__body
		padding: 20px 0
	.title--label
		height: 100%
	.title--label::after
		content: none
	.section.styled-header .header .shadow.interesting,
	.section.styled-header .header .shadow.popular
		background: brand_blue_color
	.articles--wrapper
		flex-direction: column
		align-items: center
	.articles__item
		margin: 0
		margin-bottom: 30px
	.calc__form .form__group--wrapper
		flex-direction: column
	.calc__form .form__group--wrapper .form__group:first-child
		margin-right: 0
		border-bottom: 2px solid #367C94
	.calc__form .form__group--wrapper .form__group:last-child
		margin-left: 0
	.calc__form .form__inputs--left
		margin-right: 0
	.calc__form .form__inputs--right
		flex: 1 0 auto
	.calc__form .form__body
		padding: 0 15px
	.calc__form .form__footer
		padding: 20px 15px
	.docs__item
		flex-direction: column
		align-items: center
	.docs .item__icon
		margin-right: 0
		margin-bottom: 15px
	.docs .item__desc
		margin-bottom: 15px
	.default__consult
		padding: 20px
	.default__consult .consult
		justify-content: center
	.footer__bottom--wrapper
		padding: 20px 10px
		text-align: center
	.footer__bottom--left
		width: 100%
		flex-direction: column
	.footer__bottom--right
		justify-content: center
	.modals .modal__default .modal__dialog
		padding: 10px
	.modals .modal__default .modal__form .modal__wrapper
		flex-direction: column
		margin-bottom: 10px
	.modals .modal__default .modal__form .modal__label:first-child
		margin-right: 0
		margin-bottom: 10px
	.modals .modal__default .modal__form .modal__label:last-child
		margin-left: 0
		margin-bottom: 10px
	.modals .modal__default .modal__form .modal__checkbox
		margin-bottom: 20px

@media (max-width: 400px)
	.header__search .search__label
		margin: 20px 0 0
	.header__search .search
		flex-direction: column
		justify-content: center
	.news__body,
	.services__body
		flex-direction: column
		align-items: center
	.banks--right,
	.default--right
		padding-left: 0
	.banks__content,
	.default__content
		padding-right: 0
	.title--comments
		padding-left: 0
		margin-bottom: 30px
	.title--comments::before
		content: none
	.comments .item__line
		display: none
	.comments .item__body
		padding-left: 20px