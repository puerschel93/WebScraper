textBorder()
  text-shadow: 1px 0 0 #fff, -1px 0 0 #fff, 0 1px 0 #fff, 0 -1px 0 #fff, .5px .5px #fff, -.5px -.5px 0 #fff, .5px -.5px 0 #fff, -.5px .5px 0 #fff;

.article1
  display: grid
  grid-template-columns: 1fr 1fr
  position: relative
  background-color: #EFE9E3
  padding: 2px
  .text
    margin-left: 3%
    h2
      font-size: 12vw
      span
        font-size: 12vw
        font-family: none
    p
      width: 100%
      font-size: 4.5vw
      color: rgba(0,0,0,.7)
      span
        font-size: 4.2vw
        font-family: none
  img
    position relative
    width: 100%
    height: 95%
    object-fit: contain
    overflow: hidden

.article2
  margin-top: 4%
  padding-left: 3%
  padding-bottom: 3%
  border-left: 3px solid lightgray
  border-bottom: 3px solid lightgray
  img
    width: 100%
    height: 100%
    object-fit: cover

.article3
  margin-bottom: 20px
  &__container
    height:100%
  h3
    font-size: 10vw
    font-weight: 900
    line-height: 90%
    margin-bottom: 4%
  p
    font-size: 4.5vw
    span
      font-weight: bold
      font-size: 4.5vw
    strong
      font-size: 4.5vw
  img
    margin-top: 10px
    width: 100%
    height: 60%
    object-fit: cover

.article4
  border-top: 8px solid black
  border-bottom: 8px solid black
  &__text
    display: flex
    flex-direction: column
    h3
      margin-top: 2%
      color: red
      font-weight: 900
      font-size: 4.8vw
      font-family: Font5
    h2
      font-size: 6.5vw
      font-weight: 900
      font-family: Font5
      line-height: 90%
    p
      margin-top: 2%
      font-size: 4.2vw
      font-weight: 600
      font-family: Font5
    span
      margin-top: 2%
      margin-bottom: 2%
      align-self: flex-end
      font-weight: bold
      font-size: 4.2vw

.article5
  padding-top: 10px
  border-top: 1px solid lightgray
  img
    width: 100%

.article6
  border-top: 2px solid lightgray
  border-bottom: 2px solid lightgray
  display: flex
  flex-direction: column
  &__container
    width: 100%
    height: 100%
    &--image
      width: 100%
    &--text
      margin-bottom: 10px
      h1
        font-size: 13vw
        color: #006698
        textBorder()
      h3
        text-align: justify
        font-family: Font5
        font-size: 5vw
        textBorder()
        span
          font-size: 5vw
          textBorder()

.article7
  text-align: center
  border-left: 1px solid lightgray
  padding-top: 8%
  span
    color: black
    font-weight: 900
  img
    width: 90%
    height: 35%
  .text
    h1
      font-family: Font5
      font-weight: 900
      padding-top: 7%
      line-height: 80%
      font-size: 18vw
    h2
      font-family: Font5
      font-weight: 900
      font-size: 8.5vw
    p
      font-family: Font5
      font-weight: 200
      margin-top: 5%
      font-size: 6.4vw
      strong
        font-size: inherit
      span
        font-size: inherit

.article8
  border-bottom: 1px solid lightgray
  margin-bottom: 5px
  h1
    font-size: 12.5vw
    margin-bottom: 10px
  .text
    columns: 2
    text-align: justify
    font-size: 4.6vw
    padding-right: 1%
    strong
      font-family: Font1
      letter-spacing: 1px
    p
      font-size: 4.6vw
    .second
      text-indent: 1.8rem
    .author
      padding-bottom: 4px
      border-bottom: 1px solid gray
  .imgSection
    display: flex
    flex-direction: column
    align-items: center
    img
      width: 50%
    strong
      font-family: Font1
      font-size: 4vw
    p
      font-family: Font5
      font-weight: 400
      font-size: 4vw
    span
      font-weight: 200
      color: rgba(0,0,0,.8)

.article9
  display: grid
  grid-template-columns: 1.2fr .8fr
  border-left: 1px solid lightgray
  padding: auto
  background: #f8f2ef
  .clm1
    display: flex
    justify-content: space-evenly
    align-items: center
    width: 100%
    .writers
      display: flex
      align-items: center
      justify-content: center
      color: white
      height: 75px
      background: red
      padding: 0 1%
      p
        font-size: 5vw
        text-align: center
        border-bottom: none
    p
      width: 110%
      padding-bottom: 2%
      padding-top: 1%
      border-bottom: 1px solid lightgray
  .clm2
    display: flex
    flex-direction: column
    justify-content: center
    padding-left: 2%
    border-left: 1px solid lightgray
    p
      width: 80%
      padding-bottom: 2%
      padding-top: 1%
      border-bottom: 1px solid lightgray

@media screen and (min-width: 760px)
  .article1
    grid-column: 1 / 4
    grid-row: 1 / 2
    grid-template-columns: 1fr 30%
    .text
      h2
        font-size: 2.7rem
        span
          font-size: 2.7rem
      p
        font-size: 1.07rem
        span
          font-size: 1.07rem
    img
      margin-top: 2%

  .article2
    grid-column: 4 / 5
    grid-row: 1 / 2

  .article3
    grid-column: 1 / 2
    grid-row: 3 / 4
    h3
      font-size: 1.6rem
    p
      font-size: .64rem
      span
        font-size: .64rem
      strong
        font-size: .64rem

  .article4
    grid-column: 1 / 2
    grid-row: 4 / 6
    &__text
      h3
        font-size: .9rem
      h2
        font-size: 1.1rem
      p
        font-size: .65rem
      span
        font-size: .8rem

  .article5
    grid-column: 1 / 2
    grid-row: 6 / 8
    img
      height: 100%

  .article6
    grid-column: 2 / 5
    grid-row: 3 / 5
    display: inline-block
    overflow: hidden
    &__container
      width: 100%
      height: 100%
      position: relative
      z-index: 2
      &--image
        object-fit: cover
        width: 100%
        height: 100%
      &--text
        height: 95%
        z-index: 3
        position: absolute
        bottom: 5%
        left: 1%
        display: flex
        flex-direction: column
        justify-content: space-between
        h1
          font-size: 4rem
          width: 70%
        h3
          text-align: left
          font-size: 1.1rem
          width: 30%
          line-height: 1.5rem
          span
            font-size: 1.1rem

  .article7
    grid-column: 2 / 3
    grid-row: 5 / 8
    .text
      h1
        font-size: 2.8rem
      h2
        font-size: 1.6rem
      p
        font-size: .98rem

  .article8
    grid-column: 3 / 5
    grid-row: 5 / 7
    display: grid
    grid-template-columns: 3.1fr .9fr
    grid-template-rows: 1.6fr 2.4fr
    grid-gap: 1%
    padding-left: 2%
    border-bottom: 1px solid lightgray
    border-left: 1px solid lightgray
    margin-bottom: 0
    h1
      grid-column: 1 / 3
      grid-row: 1/2
      font-size: 2.7rem
      margin-bottom: 0
    .text
      grid-column: 1 / 2
      font-size: 1vh
      p
        font-size: .8rem
      span
        font-size: .8rem
    .imgSection
      grid-column: 2 / 3
      display: inline
      img
        width: 100%
      strong
        font-size: .6rem
      p
        font-size: .6rem
      span
        font-size: .6rem

  .article9
    grid-column: 3 / 5
    grid-row: 7 / 8
    p
      font-size: .8rem
    span
      font-size: .6rem
    .clm1
      .writers
        width: 30%
        p
          font-size: .8rem

@media screen and (min-width: 1024px)
  .article1
    .text
      h2
        font-size: 3.6rem
        span
          font-size: 3.6rem
      p
        font-size: 1.3rem
        span
          font-size: 1.3rem

  .article3
    h3
      font-size: 2rem
    p
      font-size: .8rem
      span
        font-size: .8rem
      strong
        font-size: .8rem

  .article4
    &__text
      h3
        font-size: 1rem
      h2
        font-size: 1.4rem
      p
        font-size: .8rem
      span
        font-size: 1.1rem

  .article6
    &__container
      &--text
        h1
          font-size: 5rem
          width: 70%
        h3
          font-size: 1.4rem
          line-height: 1.7rem
          span
            font-size: 1.4rem

  .article7
    .text
      h1
        font-size: 4rem
      h2
        font-size: 2.1rem
      p
        font-size: 1.25rem

  .article8
    h1
      font-size: 3.6rem
    .text
      font-size: 1.8vh
      p
        font-size: 1.1rem
      span
        font-size: 1.1rem
    .imgSection
      strong
        font-size: 1rem
      p
        font-size: 1rem
      span
        font-size: 1rem

  .article9
    .clm1
      .writers
        p
          font-size: 1.2rem

@media screen and (min-width: 1250px)
  .article1
    .text
      h2
        font-size: 4.5rem
        span
          font-size: 4.5rem
      p
        font-size: 1.6rem
        span
          font-size: 1.4rem

  .article3
    h3
      font-size: 2.5rem
    p
      font-size: 1.06rem
      span
        font-size: 1.06rem
      strong
        font-size: 1.06rem

  .article4
    &__text
      h3
        font-size: 1.2rem
      h2
        font-size: 1.7rem
      p
        font-size: 1rem
      span
        font-size: 1.2rem

  .article6
    &__container
      &--text
        h1
          font-size: 6.5rem
        h3
          font-size: 1.5rem
          width: 26%
          line-height: 2rem
          span
            font-size: 1.5rem

  .article8
    h1
      font-size: 4.5rem
    .text
      p
        font-size: 1.2rem
      span
        font-size: 1.2rem

  .article9
    p
      font-size: 1.1rem
    span
      font-size: 1rem
    .clm1
      .writers
        p
          font-size: 1.2rem
