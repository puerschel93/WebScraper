$themes = {
  black: {
    left: $colors.black,
    right: $colors.black
  },
  'black-red': {
    left: $colors.black,
    right: $colors.red
  },
  'black-white': {
    left: $colors.black,
    right: $colors.white
  },
  red: {
    left: $colors.red,
    right: $colors.red
  },
  'red-white': {
    left: $colors.red,
    right: $colors.white
  },
  'white-red': {
    left: $colors.white,
    right: $colors.red
  },
  white: {
    left: $colors.white,
    right: $colors.white
  },
}

.header
  align-items center
  color: $colors.red
  display flex
  justify-content flex-end
  left: 0
  padding: $baseline $baseline $baseline ($baseline * 2)
  pointer-events: none
  position: fixed
  top: 0
  transition: color .5s ease-in-out
  z-index 9
  width: 100%

  @media (min-width: $breakpoints.tablet)
    padding: ($baseline * 2) ($baseline * 2) ($baseline * 2) ($baseline * 3)

  @media (min-width: $breakpoints.desktop)
    padding: ($baseline * 3) ($baseline * 3) $baseline ($baseline * 4)

  &__home
    color: inherit
    display: block
    font-size: 1.125em
    margin-right: ($baseline / 2)
    pointer-events: all
    text-decoration: none

    .logo
      display: block
      margin: .5em 0
      width: $baseline * 1.5

  &__breadcrumb
    margin-top: .25em
    transition: opacity .5s ease

    &[aria-hidden="true"]
      opacity: 0
      pointer-events: none

  &__nav-toggle
    margin-left: auto
    pointer-events: all

  &__contact-form-close
    align-items: center
    background: transparent
    border: 2px solid currentColor
    border-radius: 50%
    color: $colors.white
    display: inline-flex
    font: inherit
    height: ($baseline * 1.25)
    justify-content: center
    margin-left: auto
    pointer-events: all
    width: ($baseline * 1.25)

  &__home,
  .breadcrumb,
  .nav-toggle,
  &__contact-form-close
    transition: color .5s ease

  for $theme, $themeColours in $themes
    &--{$theme}
      .header__home,
      .breadcrumb
        color: $themeColours.left

      .nav-toggle,
      .header__contact-form-close
        color: $themeColours.right