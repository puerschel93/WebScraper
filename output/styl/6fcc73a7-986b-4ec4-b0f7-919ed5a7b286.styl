.news-sales__content
  background inherit
  display none
  &.active
    display block
.news-sales-carousel
  background var(--gray1)
  .container
    display flex
    background inherit
    @media (max-width: 767px)
      display block
      padding-bottom 80px
      position relative
  &__left
    position relative
    width 33.333%
    @media (max-width: 767px)
      width 100%
      margin-bottom 30px
      position static
    .btn
      margin-top 250px
      @media (max-width: 1279px)
        margin-top 160px
      @media (max-width: 1023px)
        margin-top 190px
      @media (max-width: 767px)
        position absolute
        bottom 0
        left 50%
        transform translateX(-50%)
  &__right
    background inherit
    width 66.666%
    @media (max-width: 767px)
      width 100%
  .slick-arrow
    top 150px
    @media (max-width: 1279px)
      top 110px

.news-sales-carousel-4
  background var(--gray1)
  .section-top__info a
    @media (max-width: 767px)
      max-width 100px
  .news-carousel-4
    @media (max-width: 1279px)
      padding 0 50px
    @media (max-width: 767px)
      padding 0
      width 60%
      margin-left 10px
  .news__item
    margin 0 30px
    @media (max-width: 1680px)
      margin 0 15px
    @media (max-width: 1279px)
      margin 0 10px
  .slick-list
    margin 0 -30px
    @media (max-width: 1680px)
      margin 0 -20px
    @media (max-width: 1279px)
      margin 0 -20px
    @media (max-width: 767px)
      overflow visible
    &::before
    &::after
      content ''
      position absolute
      top 0
      left -2px
      display block
      width 32px
      height 100%
      background var(--gray1)
      z-index 10
      @media (max-width: 1680px)
        width 22px
    &::after
      left auto
      right -2px
      @media (max-width: 767px)
        display: none
  .slick-arrow
    top 200px
    left -120px
    position absolute
    @media (max-width: 1680px)
      left -100px
      top 160px
    @media (max-width: 1279px)
      left -10px
    @media (max-width: 767px)
      display none
    &.slick-next
      left auto
      right -120px
      @media (max-width: 1680px)
        right -100px
      @media (max-width: 1279px)
        right 0


.yug .news-sales-carousel
.yug .news-sales-carousel-4
  background var(--youg)
  color var(--white)
  .news__date
    color #fff
  .news__tc
    display none
  .slick-arrow
    border 1px solid #fff
    &::before
      background-image url(../img/icons/arrow--white.svg)
  &__switcher
    span
      opacity .7
      &:hover
      &.active
        color var(--white)
        opacity 1
        text-decoration underline
  .btn
    border: 1px solid var(--white)
    color var(--white)
    &:hover
      @media (hover)
        background var(--white)
        color var(--black)
