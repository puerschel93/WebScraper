.interior
  &__item
    position relative
    margin-top 50px
    @media (max-width: 767px)
      overflow visible
      margin-top 30px
    .item
      &__close
        display none
        @media (max-width: 1267px) and (min-width: 768px)
          display block
          position absolute
          top 5px
          right 5px
          width 25px
          height 25px
          &::before
          &::after
            content ''
            display block
            width 20px
            height 2px
            background var(--gray3)
            position absolute
            left 0
            top 12px
            transform rotate(45deg)
          &::after
            transform rotate(-45deg)
    + p
      font-size 20px
      margin-top 30px
      margin-bottom 0
      @media (max-width: 767px)
        display none
    &:last-of-type
      + p
        margin-bottom 0
    img
      display block
      width 100%
      height auto
    > h3
      display none
      @media (max-width: 767px)
        display block
        font-size 14px
        font-family var(--text-font)
        font-weight 400
        margin 10px 0
        color var(--gray3)
  &__dots
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    @media (max-width: 767px)
      position static
      width 90%
      margin 0 -5px
      background var(--white)
      .slick-list
        overflow visible
        margin 0
  &__dot
    position absolute
    width 120px
    height 120px
    border-radius 50%
    font-size 24px
    padding-top 2px
    cursor pointer
    transform translate(-50%,-50%)
    border 1px solid transparent
    transition .5s
    @media (max-width: 767px)
      position static
      width auto
      height auto
      border-radius 0
      padding 0
      transform none
      margin 0 5px
      .item
        position relative !important
        transform none !important
        top auto !important
        left auto !important
        bottom auto !important
        right auto !important
        opacity 1
        pointer-events auto
    &::after
      content '+'
      background var(--white)
      color var(--red)
      display flex
      align-items center
      justify-content center
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
      width 33.33%
      height 33.33%
      border-radius: 50%
      border 1px solid #fff
      @media (max-width: 767px)
        display none
    &:hover
      @media (hover)
        border 1px solid #fff
        z-index 2
    &.active
      border 1px solid #fff
      z-index 2
    &:hover .item
      @media (hover)
        opacity 1
        pointer-events auto
    &.active .item
      opacity 1
      pointer-events auto
    &.popup-top.popup-left .item
      top 40px
      bottom auto
      left 40px
      right auto
      transform: translate(-100%,-100%);
      @media (max-width: 1279px)
        left 120px
        top 60px
      @media (max-width: 1023px)
        left 220px
    &.popup-top.popup-right .item
      top 40px
      bottom auto
      right 40px
      left auto
      transform: translate(100%,-100%);
      @media (max-width: 1279px)
        right 120px
        top 60px
      @media (max-width: 1023px)
        right 220px
    &.popup-bottom.popup-left .item
      bottom 40px
      top auto
      left 40px
      right auto
      transform: translate(-100%,100%);
      @media (max-width: 1279px)
        left 120px
        bottom 60px
      @media (max-width: 1023px)
        left 220px
    &.popup-bottom.popup-right .item
      bottom 40px
      top auto
      right 40px
      left auto
      transform: translate(100%,100%);
      @media (max-width: 1279px)
        right 120px
        bottom 60px
      @media (max-width: 1023px)
        right 220px
  .filter__selected
    @media (max-width: 1023px)
      display none
  .filter__selected div
    margin-top 0
  .container
    position relative
  &__filter
    position absolute
    top -70px
    right 0
    width 400px
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 30px
    @media (max-width: 1023px)
      position static
      float right
    @media (max-width: 767px)
      margin-bottom 30px
      display block
      width 100%
      .filter__select
        margin-bottom 15px
        .text3
        a
          font-size 14px
        label span::before
          top 1px
  .title1
    margin-bottom 0
