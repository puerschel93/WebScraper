.cm-container {
	border-bottom: 1px solid #444;
	margin-bottom: 0.75em;
	margin-top: 1em;
	overflow: hidden;
	padding-bottom: 1em;
	position: relative;

	img {
		display: inline-block;
	}
	p {
		font-size: inherit;
		padding: 0;
	}
	
	h1, h2, h3 {
		color: inherit;
		font-size: 1.75em;
		font-weight: bold;
		margin-bottom: 0.5em;
		padding: 0;
	}
		h2 {
			font-size: 1.5em;
		}
		h3 {
			font-size: 1.25em;
		}
		
	.small {
		font-size: 90%;
	}
	.smaller {
		font-size: 80%;
	}
	
	
	.cm-row {
		clearfix();
		box-sizing: border-box;
		display: block;
		margin-bottom: 1em;
		width: 100%;
	}
	.cm-left, .cm-right {
		box-sizing: border-box;
		float: left;
		overflow: hidden;
		padding-right: 0.6em;
		width: 50%;
		
		@media (max-width: 600px) {
			float: none;
			padding-right: 0;
			width: 100%;
		}
	}
		.cm-right {
			float: right;
			padding-right: 0;
			padding-left: 0.6em;

			> div {
				border-bottom: 1px solid #444;
				margin-bottom: 1em;
				padding-bottom: 1em;
				
				&:last-child {
					border-bottom: 0;
					margin-bottom: 0;
					padding-bottom: 0;
				}
			}
		}
		
	.buttonlinks {
		color: #AAA;
		font-size: 1.25em;
		list-style: none;
		margin: 0;
		padding: 0;
		text-transform: uppercase;
		
		li {
			display: inline-block;
			list-style: none;
			margin: 0;
			padding: 0 0.5em;
		}
		a {
			display: inline-block;
			color: #FFF;
			background: #000;
			border-bottom: 2px solid #AAA;
			border-radius: 6px;
			letter-spacing: 1px;
			padding: 0.15em 0.25em;
			text-decoration: none;
			&:hover {
				background: #AAA;
				border-bottom: 0;
				color: #FFF;
				margin-top: 2px;
				vertical-align: bottom;
				vertical-align: sub;
			}
		}
	}
	
	.slideshow {
		height: auto;
		overflow: hidden;
		position: relative;
		width: 100%;
		
		* {
			width: 100%;
			position: absolute;
			top: 0;
			width: 100%;
			&:first-child {
				left: 0;
			}
		}
	}
	
	.cm-albumcover {
		text-align: center;

		img {
			border: 3px solid #FFF;
			width: 98%
		}
		
		.cm-album-purchase {
			margin: 10px 0;
			text-align: left;
			
			.cm-orderbutton {
				background: #888;
				border-radius: 3px;
				color: #fff;
				float: left;
				font-size: 16px;
				font-weight: 500;
				line-height: 1;
				margin: 0 5px 0 0;
				padding: 12px;
				text-decoration: none;
				text-transform: uppercase;
				
				@media (max-width: $breakpoint) {
					font-size: 4vw;
				}
				
				&:hover { background: #aaa; }
				
				&.cm-right {
					float: right;
					margin: 0 0 0 5px;
				}
			}
			
			.cm-album-name {
				color: #666;
				font-size: 20.6px;
				font-weight: 300;
				line-height: 1;
				padding-top: 2px;
				text-transform: uppercase;
				
				@media (max-width: $breakpoint) {
					font-size: 4vw;
				}
				
				strong { color: #333; }
			}
			
			.cm-album-availability {
				color: #333;
				font-size: 16.05px;
				font-weight: bold;
				line-height: 1;
				text-transform: uppercase;
				
				@media (max-width: $breakpoint) {
					font-size: 2.75vw;
				}
			}
		}

		.cm-albumname {
			font-size: 120%;
			font-weight: bold;
			margin: .75em 0;
			
			small {
				font-size: 80%;
			}
		}
		
		.cm-buybutton {
			display: inline-block;
			text-align: center;
			
			img {
				border: 0;
				width: auto;
			}
		}
	}
	
	.cm-twitter-mobile {
		display: none;
		
		@media (max-width: 600px) {
			display: block;
		
			/.cm-twitter-desktop {
				display: none;
			}
		}
	}
	
	.cm-facebook {
		width: 99%;
	}
	
	.cm-bit-header {
		background: #999;
		border-radius: 3px;
		color: #fff;
		font-size: 18px !important;
		line-height: 1 !important;
		padding: 10px;
		text-align: center;
		text-transform: uppercase;
	}
}