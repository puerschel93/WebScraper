// --------------------------------
// Import & Variables
// --------------------------------

@import url('https://fonts.googleapis.com/css2?family=Padauk:wght@400;700&display=swap');

desktop()
  @media (min-width: 480px)
      {block}
mobile()
  @media (max-width: 479px)
    {block}

easeOutBack = cubic-bezier(0.34, 1.56, 0.64, 1)
easeOutQuad = cubic-bezier(0.5, 1, 0.89, 1)
easeInOutSine = cubic-bezier(0.37, 0, 0.63, 1)

// --------------------------------
// Global styles
// --------------------------------

*
  margin 0
  padding 0
  &:focus
    outline 0
  
*,
*::after,
*::before 
	box-sizing border-box

html, 
body 
  width 100%
  height 100%
  background-color white
  font-family: 'Padauk', sans-serif;
  overflow-x hidden

.logo
  display block
  +desktop()
    position fixed
    left 120px
    top 80px
    width 292px
    height 211px
  
  +mobile()
    position relative
    top 4%
    left auto
    margin 0 auto
    // left 50%
    width 60%
    height auto
    // transform translateX(-50%) scale(.8)
    &.outofsight 
      opacity 0
      top 0%  

img.note
  position absolute
  opacity 0
  width 32px
  height 32px
  z-index -2
  
.madTalks
  font-size 22px
  font-weight 700
  position absolute
  opacity 0
  z-index -2

.album-list
  position: absolute;
  width 3600px
  height 100%
  z-index 1
  

.container-test
  position absolute
  bottom: 9%;
  width 4200px
  +mobile()
    position relative
    width 100%
    top 0

.album
  position relative
  display inline-block
  width 600px
  height 400px
  &.play
    z-index 99
  // margin 200px auto
  // transition: .2s linear;
  transition: .4s cubic-bezier(0.25, 1, 0.5, 1);
  +desktop()
    margin-right -120px
    &.play
      transform translateX(-10%)
      margin-right 0px
      margin-left 40px
  +mobile()
    display block
    width 100%
    // transform scale(.8, .8)
    // width 100px

  

  a.CTAspotify 
    text-decoration none
    color white
    background #000
    font-size 20px
    font-weight 700
    border none
    border-radius 50px
    padding 4px 24px
    opacity 0
    transition .3s easeOutQuad
    z-index 5
    +desktop()
      position absolute
      display inline-block
      bottom -44px
      right 19.4%  
    +mobile()
      display inline-block
      position relative
      left 0
      top 87%
      margin 0 auto
      

  &.play
    a.CTAspotify 
      opacity 1
      +desktop()
        // transition-delay 2s
        // transform translateY(-50px)
      +mobile()
        transition-delay 0s


  .albumName
    font-size 20px
    font-weight 700
    text-align center
    opacity 0
    transition all .4s
    +desktop()
      position absolute
      display inline-block
      bottom -41px
      left 19.4%  
    +mobile()
      position relative
      display block
  &:hover .albumName, &.play .albumName
    opacity 1

  .cover-shadow
    position absolute
    display block
    width 100%
    z-index 0     // behind of album cover


  .comboCounter
    font-size 28px
    font-weight 700
    font-variant small-caps
    +desktop()
      position absolute
      left 19.4%
      bottom -48px
    +mobile()
      position relative
      display block
    
  .comboCounter.display


  .cover
    Cursor Pointer   
    webkit-tap-highlight-color transparent
    user-select: none
    position absolute
    left 19.4%
    top 4.4%
    width 61.3%
    z-index 3
    cursor pointer !important;
    user-select none;
    -webkit-tap-highlight-color: transparent;
    &:hover
      filter: brightness(var(--value, 5)); --value:1.05;

  .nextButton
    display inline-block
    z-index 2
    opacity .8
    &.nonext
      display none
    +desktop()
      position absolute
      right 22%
      top 47%
    +mobile()
      position absolute
      left 41%
      top 13%
      // width 40px
    // +mobile()
    .next-triangle
      animation: fadeInOut 1.5s  infinite easeInOutSine;
      &:first-of-type
        animation-delay: -.3s;

      +desktop()
        width 30%
        display inline-block
        margin-right -10%
      +mobile()
        width 23%
        display inline-block
        margin-right -10%

    
  .vinyl
    webkit-tap-highlight-color: transparent;
    position absolute
    // left: 19.4%
    // top: 4.4%
    width 100%
    height 100%
    left 0%
    transition .2s    // off animation 
    cursor: pointer;
    user-select: none;
    -webkit-tap-highlight-color: transparent;
    

    &::after
      display block
      position absolute
      content "NEXT"
      top 170px
      right 40px
      color rgba(255, 255, 255, .8)
      font-size 18px
      font-weight 700
      animation pulse 6s ease-out alternate infinite

    &:hover
      filter: brightness(var(--value, 5)); --value:1.8;


    .vinyl-img
      position absolute
      top 5%
      left 19.8%
      width 60%
      animation vinyl-rotate 10s linear infinite
      animation-play-state paused
      user-select: none;
      -webkit-tap-highlight-color: transparent;

  &.play
    .vinyl-img
        animation-play-state running
      
    .vinyl
      transition .4s easeOutBack  // on animation
      // animation-play-state running
      left 33%
      +mobile()
        left 0
        top -32%
        

  .vinyl-shadow
    position absolute
    right 5%
    opacity 0
    bottom -2.5%
    display inline-block
    width 100%
    height 100%
    z-index -1
    transition: .2s linear;
    +mobile()
      display none
  &.play
    .vinyl-shadow
      opacity 1
      // transform translateX(30%)
      // transition: .5s cubic-bezier(0.34, 1.56, 0.64, 1)

@keyframes fadeInOut { 
  0%   { opacity:.8; }
  50%  { opacity:.3; }
  100% { opacity:.8; }
}


@media (max-width: 479px)
  
  .album-list
    position relative
    width 100%
    text-align center
    margin-top 40%
  .album
    display block
    width 100%
    height auto
    margin-bottom 100px
    .vinyl
      top 0

    .cover-shadow
      position relative

    .vinyl-shadow
      display none
  
    .albumName
      opacity 1
      // top 20px

    a.CTAspotify 
      position relative
      display inline-block
      left 0
      margin 10px auto
        

    &:hover .albumName, &.play .albumName
      position relative
      display block
      top 72%
      left 0%
      margin 0 auto

    &.play
      // margin-top 100px
      .vinyl
        left 0
        top -32%

      a.CTAspotify 
        transition-delay 0s
          



// --------------------------------
// Animations
// --------------------------------

@keyframes vinyl-rotate {
  0% {transform: rotate(0deg)}
  100% {transform: rotate(360deg)}
}

@keyframes pulse {
  0% {opacity: 1}
  50% {opacity: 0}
  100% {opacity: 1}
}

// --------------------------------
// Signup form
// --------------------------------

.signup-form
  display inline-block
  position absolute
  width 594px
  height 403px
  text-align center
  margin-top 100px
  margin-left 150px
  margin-right 50px
  +mobile()
    position relative
    width 100%
    height 100%
    margin 0 auto
    padding 24px
  
  *
    max-width 100%

  h2
    font-size 40px
    font-weight 700
    line-height 100%
    +mobile()
      font-size 32px
  
  p
    margin 24px auto
    font-size 24px
    line-height 120%
    width 450px
    +mobile()
      font-size 20px

  .mc-field-group
    position relative
    display inline-block
    width 380px

  .button
    position absolute
    display inline-block
    text-align center
    color white
    background #F20001
    font-size 20px
    font-weight 700
    border none
    border-radius 50px
    padding 0px 24px
    height 36px
    top 8px
    right 8px
    &:hover
      background #BF0001

  .email
    font-size 18px
    line-height 0%
    height 52px
    border 1px solid #CBCBCB
    color #464646
    border-radius 50px
    width 100%
    padding-left 16px
    font-weight 400
    &::placeholder 
      color #A7B1BA
    &:hover,
    &:focus
      border-color #66637E

  .contribute 
    color #666
    font-size 18px
    display inline-block
    a
      color #F20001

.album.play .vinyl img
  animation-play-state running


// --------------------------------
// Contact modal
// --------------------------------

.modal 
  display none
  position fixed
  z-index 1
  left 0
  top 0
  width 100% 
  height 100%
  overflow auto
  background-color rgb(0,0,0)
  background-color rgba(0,0,0,0.7)

.modal-content 
  position relative
  font-size 20px
  background-color #fefefe
  margin 15% auto 
  padding 40px
  border 1px solid #888
  width 40% 
  border-radius 20px
  text-align center

  +mobile()
    width 100%
    position absolute
    bottom 0
    margin-bottom 0
    border-radius 20px 20px 0 0
    padding 40px 24px
    paragraph-height 16px
    
  p
    margin-top 16px
  a
    color #F20001
  h3
    font-size 40px
    

.close 
  position absolute
  right 12px
  top -3px
  color #aaa
  font-size 38px
  font-weight bold

.close:hover,
.close:focus 
  color black
  text-decoration none
  cursor pointer
