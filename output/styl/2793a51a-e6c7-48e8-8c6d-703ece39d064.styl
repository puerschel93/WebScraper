@require '../../layout/main'

@require '../../modules/item-info/item-info'
@require '../../modules/bullet-list/bullet-list'
@require '../../modules/user-comment/user-comment'
@require '../../modules/payment/payment'
@require '../../modules/impression/impression'


.page__content
  display flex
  justify-content space-around
  background default-color

.room-details
  color fade-out()
  border-bottom 1px solid fade-out(0.25)
  max-width 1440px

  &-gallery
    display flex

    @media (max-width lDesktopWidth)
      &__img1
        height auto
        width 100%

    @media (min-width tableWidth + 1px) and (max-width lDesktopWidth)
      height 0px
      padding 0 33.7%

      &__img2,
      &__img3
        height auto
        width 100%

    @media (max-width tableWidth)
      flex-direction column
      height 0px
      padding 0 0 75%

      &__img2,
      &__img3
        width 50%

    &__column1
      width 68.125%

      @media (max-width tableWidth)
        width 100%

    &__column2
      width 31.875%
      display flex
      flex-wrap wrap
      
      @media (max-width tableWidth)
        width 100%

  &__content
    margin 69px auto 72px
    max-width 1160px
    display grid
    grid-gap 68px
    grid-template-columns auto 380px

    @media (max-width desktopWidth)
      grid-template-columns auto
      justify-items center

    @media (max-width tableWidth)
      padding-bottom 30px

  &__details
    padding-top 1px
    display grid
    grid-gap 10px 79px
    grid-template-columns 280px auto

    @media (min-width smDesktopWidth + 1px) and (max-width desktopWidth)
      width 60%

    @media (min-width tableWidth + 1px) and (max-width smDesktopWidth)
      width 80%
      grid-template-columns auto auto
      grid-gap 40px

    @media (max-width tableWidth)
      margin 0 5px
      max-width 425px
      grid-template-columns auto
      grid-gap 70px
      justify-items center
      
  &-impression__chart
    @media (max-width tableWidth)
      width 100px
      height 100px

  &__comments
    margin-top 2px
    grid-column 1/3

    @media (max-width tableWidth)
      grid-column 1/2

  &-comments
    &__header
      container()

    &__number
      margin-top 6px
      margin-right 1px
      white-space nowrap
      color fade-out(0.5)

    &__user-comment
      margin-top 20px
      margin-bottom 23px

  &-rules,
  &-cancel
    &__container
      margin-top 17px

  &-rules
    &__title
      margin-left 20px

    .bullet-list__item
      margin-top 10px

  &-cancel
    margin-left 2px

    &__container
      max-width 340px

    &__text
      line-height 24px

  &__payment
    padding-top 1px

    @media (max-width desktopWidth)
      margin 20px auto 30px

    @media (max-width phoneWidth)
      .payment
        width 100%
        border none

        &__wrapper
          padding 20px 20px 30px 0
