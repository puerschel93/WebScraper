  .pin-text-shadow
    position relative
    left 0px
    top 0px
    font-size 30px
    font-weight bold
    
    svg
      display block
    
    text
      fill black
      stroke black
      stroke-width 10
      stroke-linecap "round"
      
  .pin-text
    position absolute
    left 0px
    top -2px
    font-size 30px
    font-weight bold
    
    svg
      display block
    
    text
      fill $pin-color
      stroke $pin-border
      stroke-width 2
      stroke-linecap "round"
  
  .pin-image
    position absolute
    opacity 1
    left 0px
    top 40px
    width 100%
    text-align center
    
  .pin-image-hover
    position absolute
    opacity 0
    left 0px
    top 40px
    width 100%
    text-align center
    
  &:hover
    .pin-image
      opacity 0
      
    .pin-image-hover
      opacity 1
      
  &.active
    .pin-image
      opacity 0
      
    .pin-image-hover
      opacity 1
    
  

