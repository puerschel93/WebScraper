$pin-color = rgb(255,255,255);
$pin-border = rgb(0,200,8);
$pin-shadow = rgb(0,0,0);

.pin
  position absolute
  width auto
  height auto
  text-align center
  font-size 22px
  font-weight bold
  color $pin-color
  cursor pointer
  
  &:focus
    outline none
  
