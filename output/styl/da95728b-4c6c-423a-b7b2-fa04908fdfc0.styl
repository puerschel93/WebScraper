.hero
    position relative
    background url('/assets/images/branding/branding_cover.jpg') no-repeat center
    background-size cover
    overflow hidden
    h1
        color $color-branding-primary
        mix-blend-mode overlay
        .gaxIcon
            background-color $color-branding-primary
    .decoImage
        position absolute
        z-index 5
        will-change transform
        &.logoPath
            width 22.5vw
            top 20vh
            left -7.5vw
        &.logoCircle
            width 15vw
            bottom 10vh
            right 10vh
        &.bottomWave
            right 0
            bottom -1px
            left 0
            height 20vh
            background url('/assets/images/branding/branding_hero_shape.svg') no-repeat top center
            background-size 100% 100%
            transform-origin bottom