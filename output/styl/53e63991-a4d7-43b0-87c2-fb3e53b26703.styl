  width: 100vw
  position: relative
  content: ''
  left: 50%
  right: 50%
  margin-left: -50vw
  margin-right: -50vw
  overflow: hidden

.unifiedStoriesContentWrap
  transform: skewY(2deg)
  
.unifiedStoriesContainer
  display: flex
  flex-direction: column
  max-width: 1207px
  margin: 0 auto
  padding: 0
  
.unifiedStoriesFeatureLabel
  display: inline-block
  padding: u05 u05 0
  border-radius: u05
  text-transform: uppercase
  background-color: #FFE100
  font-weight: bold
  font-size: t1
  margin-bottom: u4
  
.unifiedStoriesHeadline
  background-color: #bdbdbd
  background-image: url('https://cdn.glitch.com/c258d08b-9412-4115-816c-30444c24e1eb%2Funified-headline-background.svg?v=1561647625197')
  background-size: cover
  background-repeat: no-repeat
  padding: u4 u3
  h2
    font-size: t5
    margin: 0
  h2 + h2
    margin-top: u4
  img
    width: 100%
    max-width: 450px
    margin: u4 0
  
.unifiedStoriesPreview
  padding: u4
  margin-right: u4
  p
    line-height: 1.4

.unifiedStoriesRelatedContent
  padding: u4
  margin-top: u3
  ul
    margin: 0
    padding: 0
    list-style-type: none
    li
      margin: u3 0
  h3
    text-transform: uppercase
    font-size: t1
    margin-bottom: u3
  h4
    margin: 0
  p
    margin: 0 0 u1
    font-size: t2
    
@media (min-width: mediumViewport)
  .unifiedStoriesContainer
    flex-direction: row
    align-items: flex-start
    flex-wrap: wrap
  .unifiedStoriesHeadline
    flex: 0 0 100%
  .unifiedStoriesPreview
    flex: 1 1 300px
  .unifiedStoriesRelatedContent
    flex: 0 0 215px

@media (min-width: largeViewport)
  .unifiedStoriesHeadline
    flex: 0 0 350px
  .unifiedStoriesPreview
    flex: 1 1 100px

