@media (min-width: mediumViewport)
  .appsWeLoveSmallLayout
    display: none
  .appsWeLoveBigLayout
    display: flex

.appsWeLoveList
  margin: 0
  padding: 0
  list-style-type: none
  flex: 1 1 auto

.appsWeLoveListItem
