.featureCalloutsContainer
  margin-top: 1em
    
.featureCalloutsRow
  --gap: u4
    
.featureCalloutsImage
  height: 70px
  background-size: contain
  background-repeat: no-repeat
  background-position: center
  display: flex
  svg
    height: 100%
    max-width: 100%
  @media(min-width: mediumViewport)
