.skill
  width 100%
  padding 40px 60px
  background-color white
  border-radius 4px
  box-sizing border-box

  @media (max-width: 768px)
    padding 0 20px

.title
  font-size 24px
  font-weight 600
  margin-bottom 20px
  line-height 1.6

  &--sub
    font-size 20px
    margin -32px 0 8px

.description
  font-size 16px
  line-height 1.8
  letter-spacing 0.06em
  margin-bottom 60px

.image
  display block
  width 100%
  margin 20px auto
  border-radius 4px

  @media (max-width: 768px)
    width 100%

  &--w80
    width 80%
    margin 20px auto
  
    @media (max-width: 768px)
      width 100%
      margin 20px 0

  &--2col
    display inline-block
    width calc(50% - 20px)
    margin 20px 8px

    @media (max-width: 768px)
      width 100%

.link
  display block
  margin 20px 0
  padding 20px
  border-radius 4px

  &__button
    display block
    margin 0 auto
    padding 12px 48px
    width fit-content
    border-radius 4px
    font-size 14px
    font-weight 700
    color white
    background-color #3AB5A9
    transition all 0.2s

    &:hover
      opacity 0.64