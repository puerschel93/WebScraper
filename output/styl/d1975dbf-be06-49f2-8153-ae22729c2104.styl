  --su-border-width-s: 1px
  --su-border-width-m: 1.5px
  --su-border-width-l: 2px
  --su-border-width-xxl: 4px

  --su-color-black: #030303

  --su-color-blue-200: #1797e6
  --su-color-blue-300: #0191ff
  --su-color-blue-400: #1d73f1

  --su-color-gray-100: #f2f3f4
  --su-color-gray-200: #edf0f3
  --su-color-gray-250: #e6e9ed
  --su-color-gray-300: #e4e5e6
  --su-color-gray-350: #e2e6e9
  --su-color-gray-400: #dbdddf
  --su-color-gray-500: #6d6d6d
  --su-color-gray-550: #4f545b
  --su-color-gray-600: #4e4e4e
  --su-color-gray-700: #2c2c2c
  --su-color-gray-750: #253238

  --su-color-white: #fff

  --su-gap-micro-xxxs: 2px
  --su-gap-micro-xxs: 4px
  --su-gap-micro-xs: 6px
  --su-gap-micro-s: 8px
  --su-gap-micro: 9px
  --su-gap-xxxxs: 10px
  --su-gap-xxxs: 12px
  --su-gap-xxs: 14px
  --su-gap-xs: 16px
  --su-gap-s: 18px
  --su-gap-m: 20px
  --su-gap-l: 22px
  --su-gap-xl: 25px
  --su-gap-xxl: 27px
  --su-gap-xxxl: 31px
  --su-gap-xxxxl: 33px
  --su-gap-xxxxxl: 37px
  --su-gap-super: 47px
  --su-gap-super-l: 53px
  --su-gap-super-xl: 59px
  --su-gap-super-xxl: 77px

  --su-size-s: 15px
  --su-size-m: 25px
  --su-size-l: 34px
  --su-size-xxl: 48px
  --su-size-super: 152px
  --su-size-super-l: 179px

  --su-typo-font-xxs: 10px
  --su-typo-font-xs: 11px
  --su-typo-font-s: 13px
  --su-typo-font-m: 14px
  --su-typo-font-l: 15px
  --su-typo-font-xxl: 17px
  --su-typo-font-xxxl: 18px
  --su-typo-font-super: 21px
