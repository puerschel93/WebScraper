  --page-register-profession-top-space: var(--su-gap-l)
  --page-register-title-space: var(--su-gap-super-l)
  --page-register-title-top-space: var(--su-gap-l)
  --page-restore-password-back-gap: var(--su-gap-xxxxs)
  --page-social-space: var(--su-gap-xs)
  --page-title-space: var(--su-gap-super-xl)

  --placeholder-color: var(--su-color-gray-300)
  --placeholder-border-radius: var(--su-border-radius-m)

  --social-icons-gap: var(--su-gap-xxxl)

  --text-input-space: var(--su-gap-micro-xxxs)
  --text-input-border-width: var(--su-border-width-l)
  --text-input-border-color: var(--su-color-blue-200)
