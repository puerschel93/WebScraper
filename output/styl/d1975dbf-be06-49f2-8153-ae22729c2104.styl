  --form-field-space: var(--su-gap-s)
  --form-field-validation-text-space: var(--su-gap-micro-xs)

  --form-field-slim-border-width: var(--su-border-width-l)
  --form-field-slim-height: var(--su-size-xxl)
  --form-field-slim-padding: var(--su-gap-xxxxs)


  --link-theme-blue-color: var(--su-color-blue-400)

  --page-background: var(--su-color-gray-200)
  --page-divider-top-space:  var(--su-gap-xxl)
  --page-divider-bottom-space:  var(--su-gap-xxxs)
  --page-forgot-title-space: var(--su-gap-super-xxl)
  --page-forgot-subtitle-space: var(--su-gap-xl)
  --page-forgot-form-space: var(--su-gap-xxxs)
  --page-forgot-form-submit-space: var(--su-gap-xl)
  --page-form-fields-space: var(--su-gap-micro)
  --page-form-space: var(--su-gap-xxxl)
  --page-form-submit-space: var(--su-gap-m)
  --page-header-padding: var(--su-gap-xxl)
  --page-header-top-space:  var(--su-gap-xxxxl)
  --page-padding: var(--su-gap-l)
  --page-register-avatar-border: var(--su-gap-xs)
  --page-register-avatar-bottom-space: var(--su-gap-xxxxxl)
  --page-register-avatar-buttons-size: 30px
  --page-register-avatar-buttons-text-top: var(--su-gap-xxxl)
  --page-register-avatar-text-bottom-space: var(--su-gap-s)
  --page-register-avatar-text-color: var(--su-color-white)
  --page-register-avatar-inner-border: var(--su-border-width-s)
  --page-register-avatar-inner-border-color: var(--su-color-white)
