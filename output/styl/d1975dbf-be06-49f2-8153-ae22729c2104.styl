  --form-button-gap: var(--su-gap-l)
  --form-button-space: var(--su-gap-xs)
  --form-button-weight: var(--su-typo-weight-xxl)
  --form-button-slim-gap: var(--su-gap-s)
  --form-button-slim-space: var(--su-gap-xxs)

  --form-field-before-gap: var(--su-gap-xs)
  --form-field-before-bg-unmargin: -3px
  --form-field-before-font-weight: var(--su-typo-weight-xxl)
  --form-field-border-color: var(--su-color-blue-300)
  --form-field-border-radius: var(--su-border-radius-l)
  --form-field-border-width: var(--su-border-width-m)
  --form-field-caret-color: var(--su-color-blue-300)
  --form-field-icon-size: var(--su-size-m)
  --form-field-gap: var(--su-gap-m)
  --form-field-font-weight: var(--su-font-weight-l)
