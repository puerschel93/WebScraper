  --su-typo-line-xxs: 12px
  --su-typo-line-xs: 13px
  --su-typo-line-m: 17px
  --su-typo-line-l: 18px
  --su-typo-line-xl: 19px
  --su-typo-line-xxl: 20px
  --su-typo-line-xxxl: 21px
  --su-typo-line-super-l: 25px

  --su-typo-weight-m: 400
  --su-typo-weight-l: 500
  --su-typo-weight-xl: 600
  --su-typo-weight-xxl: 700

  --avatar-size-s: 86px
  --avatar-size-m: 106px

  --divider-color: var(--su-color-gray-550)
  --divider-padding: var(--su-gap-xxs)
  --divider-text-background: var(--su-color-gray-700)
  --divider-text-color: var(--su-color-white)
  --divider-text-v-padding: var(--su-gap-micro-xxs)
  --divider-text-h-padding: var(--su-gap-micro-s)

  --form-button-color-white: var(--su-color-white)
