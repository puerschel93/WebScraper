  --page-register-carousel-margin: 20px
  --page-register-link-input-space: var(--su-gap-xs)
  --page-register-link-input-bottom-space: var(--su-gap-super-l)
  --page-register-progress-font-weight: var(--su-typo-weight-xxl)
  --page-register-progress-gap: var(--su-gap-xl)
  --page-register-progress-space: var(--su-gap-micro-s)
  --page-register-slim-submit-gap: var(--su-gap-xxxl)
  --page-register-skip-button-space: var(--su-gap-micro-s)
  --page-register-panel-background: var(--su-color-gray-100)
  --page-register-panel-border-color: var(--su-color-gray-400)
  --page-register-panel-border-width: var(--su-border-width-s)
  --page-register-panel-border-radius: var(--su-border-radius-xxl)
  --page-register-panel-bottom-space: var(--su-gap-super)
  --page-register-panel-footer-space: var(--su-gap-s)
  --page-register-panel-padding-bottom: var(--su-gap-m)
  --page-register-panel-padding-h: var(--su-gap-xl)
  --page-register-panel-padding-top: var(--su-gap-s)
  --page-register-panel-placeholder-slim-size: var(--su-size-s)
  --page-register-panel-placeholder-normal-size: var(--su-size-l)
