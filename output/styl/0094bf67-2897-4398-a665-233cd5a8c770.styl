@import '../../css/quasar.variables.styl';

.comment_user
    color:$accent; 
    // padding-left: 5px;

.comment_user-active
    color:$primary !important; 
    // padding-left: 5px !important; 

    
.background-message
    // background-color: $secondary;
    padding: 1% 1% 1% 1%;


.background-message-addressee
    word-wrap: break-word;
    font-size: 10px;
    padding: 1% 1% 1% 1%;
    

.text_message
    color: $text;
    font-size: 15px;
    background-color: #0059c785;
    padding: 3%;
    border-radius: 15px;

.text_message_addressee
    color: $text;
    font-size: 15px;
    background-color: $secondary;
    padding: 3%;
    border-radius: 15px;

.separation_message
    margin-bottom:  20px;

.m_list_con
    padding: 1% 1% 1% 0%;
    // background-color: $secondary;
    border-radius: 25px;

.q-message-text 
    background: currentColor;
    padding-left: 20px;
    padding-right: 20px;
    line-height: 1.2;
    word-break: break-word;
    position: relative;


.q-message-name {
    display: none;
}

.q-message-name--sent {
    text-align: right !important;
}
.q-message-text--sent {
    border-radius: 25px !important;
}
.q-message-text--received {
    color: #81c784;
    border-radius: 25px !important;
}

.q-message-text--received:last-child:before {
    // /* right: 100%; */
    border-right: 0 solid transparent;
    border-left: 0px solid transparent; 
    /* border-bottom: 8px solid currentColor; */
}
.q-message-text--sent:last-child:before {
    left: 100%;
    border-left: 0 solid transparent;
    border-right: 0px solid transparent;
    border-bottom: 0px solid currentColor;
}
.q-message-container
    align-items: flex-start !important;

    
.q-message-text-content--sent {
    color: $text;
    text-align: left;
}

.q-message-stamp {
    margin: 0px  !important;
    opacity: 1 !important;
    // color: #000 !important;
    display: none;
}
.q-message-avatar {
    border-radius: 50%;
    width: 35px;
    height: 35px;
    min-width: 35px;
}
.q-message-text-content--received {
    color: #000;
    text-align: left;
}
.divition
    border-bottom: 1px solid #5e5e5e;


.text-username
    color: #0095f6 !important;
    padding: 5%;
    font-size: 25px;
    font-weight: 700;    


.info-user
    color: $text;
    background: $secondary;
    border-radius: 25px !important;
    padding: 5% !important;

.fondo_card_user
    background-color: $primary;    


.avatar_user
    position: relative; 
    border-radius: 15%;
    font-size: 300px;
    width: 1em;    