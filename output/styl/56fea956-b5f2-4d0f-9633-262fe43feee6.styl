.contact
	&__wrap
		min-height 60px
		margin-bottom 45px
		position relative
		@media screen and (max-width: 991px)
			margin-bottom 10px
		label
			position absolute
			top 8px
			transition all 0.2s
			font-weight 400
			color black
			letter-spacing 0px
			z-index -5
			&.error
				left 14px !important
				top 40px !important
				color red !important
				font-size 12px !important
		input
			width 100%
			border none
			border-bottom 3px solid main
			background-color transparent
			padding 0
			font-weight 400
			color black
			line-height 1
			height 38px
			-webkit-appearance none
			&:focus
				outline none
		textarea
			width 100% !important
			border none
			border-bottom 3px solid main
			background-color transparent
			padding 0
			font-weight 400
			color black
			line-height 1
			min-height 68px
			-webkit-appearance none
			&:focus
				outline none
		select
			width 100%
			border none
			border-bottom 3px solid main
			background-color transparent
			padding 0
			font-weight 400
			color rgba(0,0,0,0)
			line-height 1
			height 38px
			border-radius 0
			-webkit-appearance none
			-moz-appearance none
			appearance none
			-webkit-border-radius 0
			text-shadow 0 0 0 #000000

			&:focus
				outline none

		&--select
			&:before
				position absolute
				content ''
				width: 15px
				height 15px
				display block
				top 20%
				right 15px
				background-image url('../img/sys/select-arrows.svg')
				background-repeat no-repeat
				background-size cover
				pointer-events none

	&__agreement
		line-height 44px
		text-align left
		@media screen and (max-width: 991px)
			font-size 12px
		.checkbox
			width 14px
			height 14px
			margin 0
			padding 0
			position absolute
			left 0
			top 50%
			margin-top -7px
			cursor pointer
			z-index 10
			opacity 0
			&:checked + label:before
				background rgba(0, 0, 0, 0) url("../img/sys/check_a.svg") no-repeat
		label
			padding-left 30px
			cursor pointer
			&:before
				display block
				position absolute
				left 15px
				top 50%
				width 22px
				height 22px
				margin-top -11px
				background rgba(0, 0, 0, 0) url("../img/sys/check.svg") no-repeat
				z-index 5
				content ''
	&__footer
		background-color black
		padding 100px 0
		width 100%
		margin-top 80px
		position relative
		a
			color main
			transition all 0.4s
			padding-bottom 2px
			&:hover
				color white
		p.country
			font-size 0.750em
			color main
			font-weight 800
			padding-top 45px
			padding-bottom 6px
		p.adress
			font-weight 500
			color gray
		@media screen and (max-width: 991px)
			padding 80px 0 40px 0 
	&__links
		a
			display block
		ul
			padding-top 50px
			@media screen and (max-width: 991px)
				padding-top 30px
				padding-bottom 30px
				font-size 16px
				line-height 1.8
			li
				text-align left
				@media screen and (max-width: 768px)
					text-align center
				a
					color gray
					text-transform uppercase
					transition all 0.4s
					&:hover
						color #fff
	&__devices
		.device
			float left
			width 32%
			text-align center
			text-transform uppercase
			color main
			padding-top 30px
			padding-bottom 30px
			border-right 1px solid #342913
			border-bottom 1px solid #342913
			img
				display block
				margin 30px auto 0 auto
			&:nth-child(3n+3)
				border-right none
			&:nth-child(1n+4)
				border-bottom none
				padding-top 30px
			@media screen and (max-width: 991px)
				display none
			&:last-child
				display block
				@media screen and (max-width: 991px)
					width 90%
					margin-left 5%
	&__social
		text-align left
		padding-left 45px
		@media screen and (max-width: 991px)
			padding-top 10px
			text-align left
		a
			padding 15px
			display inline-block
			svg
				path
					fill main
					transition all 0.4s
				margin 0 !important
				&:hover
					path
						fill white
		@media screen and (max-width: 991px)
			padding-left 0
			text-align center
	&__privacy
		padding-top 24px
		text-align left
		font-size 0.750em
		padding-left 50px
		color main
		@media screen and (max-width: 991px)
			padding-top 20px
			padding-bottom 20px
			padding-left 0
			text-align center
	&__complete
		display none
		padding 15vh 0
		text-align center
		width 70%
		margin 0 auto
		font-weight 400
	.app__tabs
		padding 40px 15px 0 15px
		display none
		@media screen and (max-width: 991px)
			display block
	.container
		padding 0 15px
		@media screen and (max-width: 991px)
			padding 0

.contact__error
	color: indianred
	text-align: center
	display: none

.has-error
	border-color: #f00 !important

.contact__file
	border: 2px dashed rgba(#97743a, 0.7)
	margin-bottom: 30px

.contact__file input[type=file]
	height: .1px
	opacity: 0
	overflow: hidden
	position: absolute
	z-index: -1

.contact__file .contact__file-label
	background-color: transparent
	cursor: pointer
	text-align: center
	display: flex
	justify-content: center
	align-items: center
	height: 45px
	line-height: 45px
	padding: 0 35px 0 50px
	width: 100%
	@media screen and (max-width : 414px)
		height: auto
		line-height: 22px

.contact__file .error
	display: none !important

.contact__file .error ~ label
	color: #f00

.notify
	background-color: #e74c3c
	color: #ffffff
	cursor: pointer
	padding: 20px
	width: 350px
	opacity: 0
	position: fixed
	bottom: 10px
	left: 0
	right: 0
	margin: 0 auto
	transition: all .3s ease-in-out
	transform: translateY(200%)
	z-index: 9