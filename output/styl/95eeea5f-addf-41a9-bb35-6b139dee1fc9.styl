  // border   1px
border(b)
  position relative
  &:after
    content ''
    display block
    transform-origin 0 0
    position absolute
    if b==all
      top 0px
      left 0px
      height 100%
      width 1px
      border 1px solid default_border_color
      transform scaleX(0.5)
    if b==left
      top 0px
      left 0px
      height 100%
      width 1px
      border-left 1px solid default_border_color
      transform scaleX(0.5)
    if b==right
      top 0px
      right 0px
      height 100%
      width 1px
      border-right 1px solid default_border_color
      transform scaleX(0.5)
    if b==top
      top 0px
      left 0px
      width 100%
      height 1px
      border-top 1px solid default_border_color
      transform scaleY(0.5)
    if b==bottom
      bottom 0px
      left 0px
      transform-origin 0 100%
      border-bottom 1px solid default_border_color
      width: 100%
      height: 1px
      transform: scaleY(0.5)
    if b==bottomColor
      bottom 0px
      left 0px
      transform-origin 0 100%
      border-bottom 1px solid #DDDDDD
      width: 100%
      height: 1px
      transform: scaleY(0.5)    
