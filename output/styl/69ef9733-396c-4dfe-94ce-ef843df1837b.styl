.vdetail-box {
  .vdetail-tabs{
    height: 95px;
    background-color: $theme-bg-color;
    .van-tab {
      font-size: 31px;
      color: $theme-txt-color;
      text-align: center;
    }
    .van-tab {
      flex: none; 
      .vdetail-tab-title {
        padding: 0 15px;  
      }
    }
    .van-tabs__line {
      width: 19px;
      height: 8px;
      background: linear-gradient(82deg, #FF7835, #F09246);
      border-radius: 4px;
    }
  }
  .vdetail-line {
    border-bottom: 1px solid $theme-bd-color;
    height: 1px;  
  }
  // 简介页面信息
  .vdetail-introduction-box{
    .vdetail-introduction-info { //主播信息和视频简介
      padding: 33px 32px 22px 32px;
      background-color: $theme-bg-color;
      .anchor-box { //主播信息
        display: flex;
        justify-content: space-between;  
        align-items: center;      
        .anchor-box-info{ //左边主播详细信息
          display: flex;
          align-items: center;
          .anchor-logo {
            width: 73px;
            height: 73px;
          }
          .anchor-text-box {
            margin-left: 17px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            .anchor-nickname {
              line-height: 26px;
              font-size: 26px;
              color: $theme-txt-color1;
              font-family: Noto Sans S Chinese;
              margin-bottom: 15px;
            }
            .anchor-count {
              font-size: 22px;
              color: $theme-txt-color;
              font-family: Noto Sans S Chinese;
              line-height: 22px;
            }
          }
          
        }
        .anchor-btn { //右边关注按钮
          width: 119px;
          height: 56px;
          background: linear-gradient(90deg, #FF7835, #F09246);
          border-radius: 28px;
          .van-button__text {
            font-size: 24px;
            color: $theme-txt-white;
          }
        }
        .van-button--primary {
          border: none;  
        }
      }
      .vdetail-introduction-remark { //视频介绍
        margin: 31px 0 22px 0;
        font-size: 32px;
        color: $theme-txt-color1;
        line-height: 48px;
      }
      .vdetail-introduction-count { //点赞评论和分享数
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-left: 65px;
        padding-right: 95px;
        .icon-box {
          font-size: 19px;
          line-height: 19px;
          color: $theme-txt-color;
          display: flex;
          align-items: center;
          img {
            width: 45px;
            height: 33px;
            padding: 0 6px;
          }  
        }
      }
    }
    .related-box { //相关视频
      padding: 32px 65px 32px 35px;
      background-color: $theme-bg-color;
      margin-top: 21px;
      .related-box-title {
        padding-bottom: 7px;
        font-size: 32px;
        color: $theme-txt-color1;
      }
    }
  }
  // 评论页面
  .vdetail-comment-box {
    .inp-box {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      height: 165px;
      background: $theme-bg-color;
      box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.04);
      box-sizing: border-box;
      padding: 16px 25px 74px 21px;
      .van-field__body {
        height: 75px;    
        background: $c-theme-txt-color1;
        border: 1px solid $theme-bd-color;
        border-radius: 6px;
        padding-left: 39px;
        padding-right: 15px;
        .van-field__button {
          .van-button{
            width: 106px;
            height: 64px;
            background: $theme-txt-color5;
            border-radius: 6px;
            border: none;
          }
        }
        input {

        }
      }
    }
  }
}