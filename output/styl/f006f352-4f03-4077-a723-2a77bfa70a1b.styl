.pricing3 
    .container 
        #selectTariff 
            flex-wrap: wrap
            gap 10px
            min-height: 100%;
            align-content: center
            // height 80%
            height 200px
            .animated
                label
                    width calc(250px)
                    height 30px
                    input
                        appearance  none 
                        padding auto
                        align-items center
                        font-size: 1.2rem
                        margin 8px 0
                        &::before
                            display flex
                            min-height: 60px;
                            padding 10px
                            align-content: center;
                            justify-content: center
                            text-align center
                            content attr(data-name)
                            
                        width 100%
                        height 50px
                        border 3px solid rgb(250, 213, 2)
                        background #000
                        color: rgb(250, 213, 2)
                        border-radius: 3px
                        box-shadow: 0 2px 5px rgba(0,0,0,0.5),
                                    inset 2px 2px 2px rgba(255,255,255,0.3)
                        &:hover
                            box-shadow: 6px 9px 23px 2px  rgb(250, 213, 2)

                        &:checked 
                            background rgb(250, 213, 2)
                            color #000
                            border-color: #000
                            text-shadow: 0 0 20px rgb(250, 213, 2)
                            box-shadow: 6px 9px 23px 2px  rgb(250, 213, 2)
                            // box-shadow: 0 2px 5px rgba(250, 213, 2, 0.5),
                            //         inset 1px 1px 1px rgba(250, 213, 2, 0.4),
                            //         inset -1px -1px 4px rgba(255, 255, 255, 0.2)
            #labelSolo
                width calc(100% - 25px)
                margin-top: 23px
        .price-plan
            display flex
            flex-wrap: wrap
            gap 10px 
            min-height: 100%;
            align-content: center
            justify-content: space-evenly
            .tariff-services
                position relative
                width 250px
                height 280px
                color: #fff
                border 1px solid rgba(255, 255, 255, 0.2)
                border-radius 15px
                padding: 40px 0
                p 
                    font-size: 1.7rem
                    font-style italic
                
                h3 
                    font-size: 2rem
                    margin 10px
                    color: gold
                    font-weight bold
                    text-transform uppercase
                span
                    position absolute
                    width 250px
                    height 280px
                    top 0
                    left 0px
                    border-radius 15px
                    border 1px solid #ffffff36
                    transform: skewX(-3deg); 
                
#standartplus, #vip, #bootcamp, #solo
    display none
                       