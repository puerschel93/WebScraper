font_main = 'Arial', sans-serif

body
	font font_main
.wrap
	width 90%
	max-width 1400px
	margin 0 auto
	overflow hidden
.header
	background-color #242424
	overflow hidden
	padding-left 15.7%
	padding-right 15.7%
	line-height 45px
	height 100%
	vertical-align middle
	@media screen and (max-width: 1570px)
		padding-left 10%
		padding-right 10%
	@media screen and (max-width: 1350px)
		padding-left 5%
		padding-right 5%
	@media screen and (max-width: 1200px)
		padding-left 1%
		padding-right 1%
	&__headerLogo
		float left
		color #57c5a0
		text-decoration none
		text-transform uppercase
		word-spacing: -25px
		display inline-block
		font-size 26px
	&__headerLinks
		float right
		text-decoration none
		text-transform uppercase
		color #7e7e7e
		font-size 11px
		display inline-block
		margin-right 20px
				
		:first-child
			margin-right 40px 
.nav
	background-color: #FFF
	padding-left 15.7%
	padding-right 15.7%
	min-height 60px
	line-height 60px
	overflow hidden
	@media screen and (max-width: 1570px)
		padding-left 10%
		padding-right 10%
	@media screen and (max-width: 1350px)
		padding-left 5%
		padding-right 5%
	@media screen and (max-width: 1200px)
		padding-left 1%
		padding-right 1%
	.navlist
		list-style none
		&__item-left:first-child
			margin-left 0px
		&__item-left
			float left
			margin-left 45px
			@media screen and (max-width: 755px)
				margin-left 15px
			a
				text-decoration none
				text-transform capitalize
				display inline-block
				font-size 16px
				color #242424
				line-height 25px
	&__imgLinks
		float right
		margin-right 20px
		margin-left 20px
		@media screen and (max-width: 585px)
			float left
			margin-right 5px
			margin-left 5px
.main
	background-color #edece7
	background-image url(../img/main_girl.png)
	background-repeat no-repeat
	background-size cover
	min-height 460px
	max-height 550px
	overflow hidden
	padding-left: 52.85%
	@media screen and (max-width: 755px)
		padding-left: 15%
	&__price
		margin-top 70px
		padding 25px 10px
		background-color #57c5a0
		display inline-block
		color #fff
		font-size 13px
		font-weight bold
	&__title
		color #242424
		font-size 40px
		line-height 40px
		margin-top 15px
	&__txt
		font-size 20px
		color #242424
		line-height 25px
		display inline-block
		max-width 360px
		min-width 250px
		margin-right 400px
		margin-bottom 15px
		margin-top 15px
.top
	background-color #2e2e2e
	min-height 90px
	position relative;
	padding-left 15.7%
	padding-right 15.7%
	overflow hidden
	@media screen and (max-width: 1570px)
		padding-left 10%
		padding-right 10%
	@media screen and (max-width: 1350px)
		padding-left 5%
		padding-right 5%
	@media screen and (max-width: 1200px)
		padding-left 1%
		padding-right 1%
	&__position
		position absolute
		z-index 1
		left 15%
	&__position-active
		position absolute
		left 15.5%
		top 2px
		z-index 100
	.topCategories
		display inline-block
		width 188px
		margin-top 30px
		text-align center
		color #adadad
		line-height 25px
		letter-spacing 0.025em
		@media screen and (max-width: 1100px)
			width 150px
			padding-left 2%
		@media screen and (max-width: 985px)
			display block
			margin-left 40%
		@media screen and (max-width: 525px)
			margin-left 15%
		@media screen and (max-width: 425px)
			margin-left 1%
		&-active
			color #fff
		&__name
			font-size 18px
		&__desc
			font-size 12px
.gallery
	background-color #242424
	padding-left 15.7%
	padding-right 15.7%
	@media screen and (max-width: 1570px)
		padding-left 10%
		padding-right 10%
	@media screen and (max-width: 1350px)
		padding-left 5%
		padding-right 5%
	@media screen and (max-width: 1200px)
		padding-left 1%
		padding-right 1%
	&__item
		display inline-block
		position relative
		margin-right 17px
		@media screen and (max-width: 1100px)
			display block
			margin-left 35%
			padding 5px 0
			@media screen and (max-width: 755px)
				margin-left 25%
			@media screen and (max-width: 525px)
				margin-left 15%
			@media screen and (max-width: 425px)
				margin-left 5%
	&__txt
		position absolute
		top 40%;
		left 30%;
		background-color #312d2b
		opacity .9
		text-transform uppercase
		color #fff
		font-size 25px
		&:nth-child(2)
			left: 20%;
.section2
	background-color: #ebe7df
	padding-right 15.7%
	padding-left 15.7%
	overflow hidden
	padding-bottom 50px
	@media screen and (max-width: 1570px)
		padding-left 10%
		padding-right 10%
	@media screen and (max-width: 1350px)
		padding-left 5%
		padding-right 5%
	@media screen and (max-width: 1200px)
		padding-left 1%
		padding-right 1%
	&__title
		display inline-block
		line-height 60px
		margin-top 35px
		font-size 25px
		color #242424
		a
			display: none
			font-size 14px
			color #bcb5a7
			letter-spacing 0.025em
			font-weight normal
			@media screen and (max-width: 525px)
				display block
			
	@media screen and (max-width: 1100px)
		padding-left 2%
	&__btn
		display inline-block
		float right
		margin-top 30px
		font-size 14px
		color #bcb5a7
		padding 10px 20px
		letter-spacing 0.025em
		margin-right 20px
		@media screen and (max-width: 525px)
			display none
	.shoesCard
		display inline-block
		margin-right 15px
		margin-top 33px
		position relative
		background-color: #FFF
		height 270px
		@media screen and (max-width: 1200px)
			display block
			width 300px
			margin-left 35%
			@media screen and (max-width: 755px)
				margin-left 25%
			@media screen and (max-width: 525px)
				margin-left 15%
			@media screen and (max-width: 425px)
				margin-left 5%
		&__img
			border-bottom 1px solid #57c5a0
		&__price
			padding 25px 10px
			background-color #57c5a0
			display inline-block
			color #fff
			font-size 13px
			font-weight bold
			position absolute
			bottom 0
			left 15px
		&__name
			margin-left 95px
			font-size 18px
			margin-top 15px
.section3
	background-color: #ebe7df
	padding-left 15.7%
	padding-right 15.7%
	@media screen and (max-width: 1570px)
		padding-left 10%
		padding-right 10%
	@media screen and (max-width: 1350px)
		padding-left 5%
		padding-right 5%
	@media screen and (max-width: 1200px)
		padding-left 1%
		padding-right 1%
	&__item
		background-color #dfdbd4
		display inline-block
		margin-right 20px
		margin-top 25px
		max-width 220px
		min-height 185px
		color #242424
		padding-left 15px
		@media screen and (max-width: 1100px)
			display block
			margin-left 35%
			max-width 300px
			margin-top 5px
			@media screen and (max-width: 755px)
				margin-left 25%
			@media screen and (max-width: 525px)
				margin-left 15%
			@media screen and (max-width: 425px)
				margin-left 5%
		&:nth-child(1)
			margin-top 0
	&__title
		font-size 14px
		font-weight bold
		line-height 60px
	&__txt
		font-size 12px
		line-height 16px
	&__txt-cursive
		font-style italic
	.blog
		min-width 420px
		margin-right 0px
		padding-top 7px
		@media screen and (max-width: 1100px)
			min-width 300px
		&__row
			position relative
			padding-left 65px
	&__date
		color #fff
		font-size 13px
		line-height 12px
		display inline-block
		padding 10px
		background-color #57c5a0
		position absolute
		bottom 0
		left 0
		text-transform uppercase
.footer
	background-color: #242424
	padding-left 15.7%
	padding-right 15.7%
	overflow hidden
	@media screen and (max-width: 1570px)
		padding-left 10%
		padding-right 10%
	@media screen and (max-width: 1350px)
		padding-left 5%
		padding-right 5%
	@media screen and (max-width: 1200px)
		padding-left 1%
		padding-right 1%
	&__top
		padding-top 50px
	.topItem
		max-width 250px
		display inline-block
		margin-right 50px
		@media screen and (max-width: 1100px)
			display block
			margin-left 35%
			margin-top 2%
			@media screen and (max-width: 755px)
				margin-left 25%
			@media screen and (max-width: 525px)
				margin-left 15%
			@media screen and (max-width: 425px)
				margin-left 5%
		&__title
			margin-bottom 10px
			font-size 14px
			color #7d7d7d
			text-transform uppercase
			line-height 18px
		&__txt
			font-size 12px
			color #a4a4a4
			line-height 18px
			font-style italic
			&-date
				color #c4c5bf
			&-diff
				color #57c5a0
		&__picture
			display inline-block
			margin-bottom 90px
	&__content
		margin-top 30px
		padding-top 40px
		overflow hidden
		border-top 2px solid black
		.input-group
			float left
			@media screen and (max-width: 525px)
				margin-left 15%
			@media screen and (max-width: 425px)
				margin-left 5%
			
			&__part
				float left
				margin 0
				padding 0
				height 100
				border none
				height 35px
				text-align center
				width 215px
				&-right
					background-color #7d7d7d
					width 20px
				&-left
					background-color #2e2e2e
					color #7d7d7d
					font-style italic
					font-size 12px					
		.footerList
			float right
			margin-right 0px
			@media screen and (max-width: 525px)
				float left
				margin-left 15%
				margin-top 10px
			@media screen and (max-width: 425px)
				margin-left 5%
	.footerBottom
		padding 20px 0 30px 0
		&__list
			list-style none
			float right
			margin-top 15px
			@media screen and (max-width: 525px)
				float left
				margin-left 15%
			@media screen and (max-width: 425px)
				margin-left 5%
			li
				display inline-block
			li a
				text-decoration none
				color #a4a4a4
				font-size 12px
				letter-spacing 0.025em
				line-height 25px
		&__txt
			display inline-block
			margin-top 10px
			color #a4a4a4
			font-size 12px
			letter-spacing 0.025em
			line-height 18px
			@media screen and (max-width: 525px)
				margin-left 15%
			@media screen and (max-width: 425px)
				margin-left 5%

	
