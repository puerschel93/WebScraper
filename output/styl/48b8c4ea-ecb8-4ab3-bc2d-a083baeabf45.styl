.customModal
    .ant-modal-body
        padding: 0

    .ant-modal-content
        background: #42454D
        border-radius: 9px
        padding: 15px

    .modalTitle
        font-size: 16px
        color: #fff
        position: relative
        z-index 100

        em
            position: absolute
            top: 3px
            right: 0
            width: 14px
            height: @width
            display: block
            background: url('./img/close.png') no-repeat
            background-size: 100% 100%
            text-indent: -999em
            overflow: hidden
            cursor: pointer

    .modalMain
        padding: 30px 0 0
        color: #B7BBC6
        
        .btnWrap
            display: flex
            margin: 38px 0 0

            .btn
                flex: 1
                height: 40px
                line-height: @height
                border-radius: 8px
                text-align: center
                font-size: 14px
                font-weight: bold
                color: #FFFFFF
                cursor: pointer
                cursor pointer

                &.confirm
                    margin: 0 0 0 20px
                    background: #2781FF

                &.cancel
                    background: #646770