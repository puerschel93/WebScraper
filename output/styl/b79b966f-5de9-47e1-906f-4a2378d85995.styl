


.Admin
	
	gap = 2px
	control = 100px

	@media screen-phone
	    margin 20px !important
	// font-size 28px
		
	font-family GT Walsheim Pro
	letter-spacing -0.3px
	font-size 20px
	line-height 25px
	
	&__servicetype, &__detailstitle, &__serviceremove
		text-transform uppercase
		font-size 13px
		font-weight bold
		letter-spacing 0.2
	
	&__serviceremove
		color #8d8d8d
		background #ac2a2a
		padding 5px 15px
		display inline-block
		border-radius 30px
	
	@media screen-phone
		font-size 22px

	@media screen-phone
		margin 60px 2px 2px 2px
	
	::placeholder
		color var(--formPlaceholder)

	:-ms-input-placeholder
		color var(--formPlaceholder)

	::-ms-input-placeholder
		color var(--formPlaceholder)
	
	form
		margin 70px 20px 20px 20px
		
	textarea
		border-radius 20px
		padding 22px
		@media screen-phone
			width 100%	
		
	input, textarea
		border 0
		outline 0
		font-size 20px
		font-family GT Walsheim Pro
		-webkit-appearance none
		background #969696
		color #fff
		margin-bottom 35px
		resize none
	

		
		@media screen-phone
			font-size 22px
		// letter-spacing -1.4px
		// font-family GT Walsheim Pro
		-webkit-appearance none
		&:focus, &:active
			border 0
			outline 0
		&.form__upload-input[type="file"]
			display none
	&__letter
		background #ffffff1f
		padding 40px
		border-radius 30px
		position relative
		@media screen-phone
			padding 32px 10px
			margin-bottom 180px
		
		
	&__form
		
		
		
		max-width 860px
		
		margin 0 auto
		
	
		
		
		
	&__head
		margin 8px 20px
		position relative
	&__title, &__hint
		/*font-size 45px
		line-height 39px
		letter-spacing -3px*/
	&__hint
		position absolute
		right 0
		top 0
		@media screen-phone
			position relative
			opacity .6
	&__input
		width 100%
		height 70px
		line-height 70px
		border-radius 20px
		@media screen-phone
			height 80px
			line-height 80px
		text-align left
		
		padding 0 56px
		& + &
			margin-left gap
			@media screen-phone
				margin-left 0
				margin-top gap
	&__button
		width 50%
		@media screen-phone
			width initial
		height 100px
		text-align center
		line-height 100px
		@media screen-phone
			height 80px
			line-height 80px
		cursor pointer
		&_select
			&[active="true"]
				background var(--formHighlight) !important
				color #fff !important
			
		& + &
			margin-left gap
			@media screen-phone
				margin-left 0
				margin-top gap
	&__text
		margin 80px 17px 20px 17px
		@media screen-phone
			font-size 16px
			line-height 18px
			margin 0px 17px 30px 17px
	&__item
		display inline-flex
		width 100%
		.Link
			border 0
		@media screen-phone
			display block
		& + &
			margin-top gap
			
		&_color
			background #f2f2f2
			padding 15px 14px
	&__action
		padding 70px 0
		
		background #004b32
		color #aaa
		text-align center
		padding 24px
		border-radius 48px
		z-index 9
		position fixed
		letter-spacing -1.4px
		bottom 9px
		font-size 28px
		width initial
		right 10px
		font-family 'GT Walsheim Pro'
		@media screen-phone
			left 10px

		&-subtitle
			opacity .3
			margin-top 5px
		// background-color #222222
		// color #D4D4D4
		// width 100%
		// border-radius 20px
		// line-height 213px
		@media screen-phone
			// line-height 160px
		text-align center
		margin 0 2px 2px 2px
		@media screen-phone
			margin 0
		cursor pointer
	&__disabled
		cursor default !important
		opacity .5
	
	&__logo
		margin-top 0px
		height 60px
		margin-left 20px
		mask-image url('/assets/logo.svg')
		mask-size 180px
		mask-repeat no-repeat
		background-color var(--text)
		@media screen-phone
			mask-size 140px
			height 48px
		
	&__dot
		@media screen-phone
			display none
		background #d8d8d8
		height 100px
		width 100px
		border-radius 100px
		position absolute
		right 60px
		top 40px

	.admin__serviceTitle
		margin-left: 20px

	.admin__priceTitle
		position absolute
		right 20px

	.admin__separator
		width 100%
		@media screen-phone
			width initial
		position block
		height 1px
		background #fff
		opacity .3
		margin 20px
		box-sizing border-box
	
	.admin__addservice
		background #585858
		color #aaa
		text-align center
		padding 24px
		border-radius 48px
		z-index 9
		position fixed
		letter-spacing -1.4px
		bottom 92px
		font-size 22px
		right 10px
		font-family 'GT Walsheim Pro'
		@media screen-phone
			left 10px
		
		&:hover
			cursor pointer

	// .admin__addservice:hover
	// 	cursor pointer
	
	.admin__services
		display: block
		width: 100%

	.admin__service
		margin 20px
		position relative
		border-bottom 1px solid rgba(255, 255, 255, .3)
		padding-bottom 40px
		flex-shrink: 0;
	.admin__service:first-child
		margin-top 60px
	input.admin__servicename,
	input.admin__servicename:focus,
	input.admin__detailsvalue,
	input.admin__detailsvalue:focus,
	input.admin__serviceprice,
	input.admin__serviceprice:focus,
	input.admin__summaryprice,
	input.admin__summaryprice:focus,
	input.admin__deadlinedate,
	input.admin__deadlinedate:focus {
		// background none
		// border-bottom 1px solid rgba(0,0,0,0.3)
		color #fff
		background #ffffff1a
		width 50%
		padding 14px 22px
		border-radius 40px
	}

	textarea.admin__servicename
		margin-top 10px
		margin-bottom 0
		

	input.admin__serviceprice,
	input.admin__serviceprice:focus
		@media screen-phone
			width 100%
			position relative
			left 0
			text-align left
		width 20%
		position absolute
		right 0
		margin-top 32px
		text-align right

	input.admin__deadlinedate,
	input.admin__deadlinedate:focus  {
		width 300px
	}

	input.admin__summaryprice,
	input.admin__summaryprice:focus
		@media screen-phone
			width initial
			margin 0
			position relative
			text-align left
			right 0
		width 20%
		position absolute
		right 60px
		margin-top 36px
		text-align right

	.admin__detailstitle,
	input.admin__detailsvalue
		display block
	.admin__deadlinedate,
	input.admin__deadlinedate
		display block
		margin-top 4px

	input.admin__detailsvalue
		margin-top 10px
		margin-bottom 40px

	.admin__details
		margin-top 40px
		
	.admin__row
		margin 10px 0

	.admin__summary
		// display inline-flex
		// width 100%
		margin 0 20px

	.admin__summarytitle
		position absolute
		right 60px
		@media screen-phone
			position relative
			right 0
			margin-bottom 6px
	
	.admin__deadline
		margin-top 150px
		margin-bottom 40px
		padding-left 20px


	.admin__deadlinetitle
		display inline-block
	.admin__serviceremove:hover
		cursor pointer
		
