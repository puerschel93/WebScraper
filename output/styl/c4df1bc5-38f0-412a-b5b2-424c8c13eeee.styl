@import "star.styl";
.shifuxingxi
    .weui-master
        width:100%
        height:165px
        padding:10px 0px
        .weui-bjmasterinfo
            width:100%
            margin:0px auto
            padding:0px 15px
            display: flex
            display: -webkit-flex
            display: -ms-flexbox
            .photo
                flex: 0 0 102px
                -webkit-box-flex: 0 0 102px
                -webkit-flex: 0 0 102px
                width:100px
                height:146px
                position:relative
                margin-right:10px
                border:1px solid #999999
                .rz-icon
                    width:35px
                    height:35px
                    top:0
                    left:0
                    display: inline-block
                    position:absolute
                    z-index:10
                    bg-image('img/rz')
                    background-size:35px 35px
                    background-repeat: no-repeat
            .content
                flex: 1
                -webkit-box-flex: 1
                -webkit-flex: 1
                color:#666666
                .masterName
                    padding-bottom:10px
                    padding-left:2px
                    .names
                        color:#666666
                        font-weight: bold
                        margin-right:20px
                .text
                    height:20px
                    font-size:14px
                    display: inline-block
                    vertical-align:top
                    line-height:20px
                    margin-left:5px
                    .text-pf
                        color:#ff5200
                        font-weight:700
                        font-size:25px
                    .text-span
                        color:#ff5200
                        font-weight: 700
                .price,.scort
                    .weui-cell
                        padding:10px 0px 0px 0px
                    .bao-icon
                        display: inline-block
                        height:20px
                        width:20px
                        background-size:20px 20px
                        background-repeat:no-repeat
                .price
                    .priceSpan
                        display: inline-block
                        width:85px;
                        position:relative
                    .bao-icon
                        position:absolute
                        bg-image('img/bzj')
                        z-index:10
                        top:0px
                        right:7%
                .scort
                    .scortSpan
                        display: inline-block
                        width:85px;
                        position:relative
                    .bao-icon
                        bg-image('img/cxf')
                        position:absolute
                        z-index:10
                        top:0px
                        right:7%
                .tag
                   .weui-cell
                    padding-left:0
                    padding-right:0
    .masterInfoTab
        width:100%
        padding:0px 15px
        .weui-navbar__item
            color:#666666
            &.weui-bar__item--on
                color:#ff5200
                font-weight: 700
                border-bottom:2px solid #ff5200
                background:#fff
        .masterInfoTab-item
            .weui-tab__bd-item
                overflow:hidden
                .mastertabs
                    display: flex
                    display: -webkit-flex
                    display: -ms-flexbox
                    width:100%
                    height:30px
                    padding-top:10px
                    padding-left:10px
                    color:#333333
                    font-size:14px
                    .tabs-left
                        flex: 0 0 80px
                        -webkit-box-flex: 0 0 80px
                        -webkit-flex: 0 0 80px
                        height:20px
                        line-height:20px
                    .tabs-right
                        flex: 1
                        -webkit-box-flex: 1
                        -webkit-flex: 1
                        line-height:20px
                .masterComment
                    width:100%
                    padding:5px 10px
                    .scoreAndComment
                        width:100%
                        display: flex
                        display: -webkit-flex
                        display: -ms-flexbox
                        .scoreStars
                            flex: 0 0 90px
                            -webkit-box-flex: 0 0 90px
                            -webkit-flex: 0 0 90px
                            width:90px
                            height:100%
                            text-align: center 
                            position:relative  
                            &:after
                                content:" "
                                display: block
                                width:1px
                                height:75px
                                background:rgba(153,153,153,0.38)
                                position:absolute
                                top:2px
                                right:-2px       
                            .scoreStarsText
                                display: block
                            .scoreText
                                display: block
                                color:#ff5200
                                margin:10px 0px
                        .allSay
                            flex: 1
                            -webkit-box-flex: 1
                            -webkit-flex: 1
                            padding:0 0 0 10px
                            .sayTitle
                                color:#666666
                                font-size:14px
                            .allSayMaster
                                display: inline-block
                                color:#ff5200
                                border:1px #ff5200 solid 
                                padding:2px 5px
                                font-size:12px
                                margin:2px
                                
                .allComments
                    .allCommentsType
                        width:100%
                        display: flex
                        display: -webkit-flex
                        display: -ms-flexbox
                        border-bottom:1px #D3D3D3 dashed 
                        .allCommentsType-item
                            flex: 1
                            -webkit-box-flex: 1
                            -webkit-flex: 1
                            text-align:center
                            font-size:10px
                            height:40px
                            padding:10px 0px 10px 15px
                            line-height:20px
                            position:relative
                            &:after
                                content:' '
                                width:9px
                                height:9px
                                border-radius: 50%
                                background:#FF0000
                                display: inline-block
                                position:absolute
                                top:15px 
                                left:5px
                                opacity: 0
                            &.allCommentsType-itemOns
                                &:after
                                    opacity: 1
                            .masterInfoAndCommentsOnline
                                width:15px
                                height:15px
                                border-radius: 50%
                                border:1px solid #D3D3D3
                                position:absolute
                                left:2px
                                top:12px
                .commentContent
                    width:100%
                    font-size:12px
                    color:#666
                    line-height:20px
                    .clientName
                        margin-bottom:10px
                        padding:0px 15px
                        .clinetNameSpan 
                            margin-left:5px
                            &:first-child
                                margin-left:0px
                    .serviceGood
                        padding:0px 15px
                        margin-bottom:10px
                        span 
                            margin-right:5px
                    .serviceType
                        padding:0px 15px
                        margin-bottom:10px
    .useCoupon
        .weui-cells__title
            color:#666666
            .priceColor
                color:#ff5200
                margin-right:10px
                font-weight: bold
