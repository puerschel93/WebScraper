.Header__section
    width 100%
    position: fixed
    z-index 1000
    height 15rem
    background-color: #EEEEEE
    display: flex
    justify-content: space-between
    top: 0
    .Presentation--container
        width 100%

    .logo--container
        width: 18rem
        margin: 0 auto
        padding-top: 1.5rem

        img
            width: 100%

    .info--container
        display: flex
        justify-content: center
        .info--number
            margin-top: 0.8rem
            padding-left: 1rem
            padding-right: 1rem 
            font-size: 1.5rem
            font-weight: 700

            span
                font-size: 2rem
                padding-right: 0.3rem
             
        .info--email
            margin-top: 0.8rem
            padding-left: 1rem
            padding-right: 1rem 
            font-size: 1.5rem
            font-weight: 700

            span
                font-size: 2rem
                padding-right: 0.3rem
        
    .navigation--container

        .bar--container
            background-color: #2C2C2C
            width: 6rem
            height 15rem
            text-align: center
        
            span
                width: 100%
                height: 100%
                padding-top: 5rem
                font-size: 3rem
                color white
                transition: 0.2s

            span:hover
                transform: scale(0.9)
                transition: 0.2s
    
    .nav--options
        width 100%
        display: flex
        right: 0
        position: absolute
        background-color: #393939
        color: white
        font-weight: 500
        height 15rem
        
        ul
            width 100%
            li
                width 98%
                list-style: none
                text-align: center
                height: 4.3rem
                background-color: #2C2C2C 
                margin: 0.5rem
                font-weight: 600
                transition: 0.5s
            
                a
                    color: #E7E7E7
                    text-decoration: none
                    display block
                    width 98%
                    height: 3rem
                    padding-top: 1.5rem

            li:hover 
                background-color: #232323
                transition: 0.5s
                    
        .arrow--btn
            width 5rem
            padding-top: 6.5rem
            background-color: #2C2C2C
            text-align: center
            transition: 0.5s

        .arrow--btn:hover
            background-color: #232323
            transition: 0.5s
            
    .hidden
        transform: translateX(100%)

    .transition
        transition: 0.5s

@media screen and (max-width 400px)
    .Header__section 
        .info--container 
            .info--number
                font-size: 1rem
                span
                    font-size: 1.5rem

    .Header__section 
        .info--container 
            .info--email
                font-size: 1rem
                span
                    font-size: 1.5rem

@media screen and (min-width 900px)
    .Header__section
        width 98vw
        max-width: 100rem
        height 10rem
        
        .Presentation--container
            width 40rem
            display flex

        .logo--container
            width: 4rem
            margin-left: 3rem
            padding-top: 0.5rem

            img
                margin-top: 0.5rem
                width: 15rem

        .info--container
            margin-top: 0.5rem
            display: block
            .info--number
                margin-top: 2.4rem
                padding-left: 0.5rem
                padding-right: 0.5rem 
                font-size: 1.3rem
                font-weight: 700

                span
                    font-size: 1.5rem
                    padding-right: 0.3rem
                
            .info--email
                margin-top: 0.6rem
                padding-left: 0.5rem
                padding-right: 0.5rem 
                font-size: 1.3rem
                font-weight: 700

                span
                    font-size: 1.5rem
                    padding-right: 0.3rem
            
        .navigation--container
            .bar--container
                display: none           

        .nav--options
            width 10%
            display: flex
            justify-content: flex-end
            position: static
            background-color: #EEEEEE
            color: white
            font-weight: 500
            height 10rem
            
            ul
                margin: 0 auto
                justify-content: center
                display: flex
                margin-top: 1.5rem
                margin-right 16rem 
                
                li
                    width 98%
                    list-style: none
                    text-align: center
                    height: 4.3rem
                    background-color: #EEEEEE
                    margin: 1.5rem
                    font-weight: 900
                    transition: none
                
                    a
                        color: black
                        text-decoration: none
                        display block
                        width 98%
                        height: 3rem
                        font-size: 1.2rem
                        padding-top: 1.5rem
                        font-weight: 900

                li:hover 
                    background-color: #EEEEEE
                    transition: none
                    a  
                        color: #FF4060
                        transition: 0.5s
                        
            .arrow--btn
                display: none
                width 5rem
                padding-top: 6.5rem
                background-color: #2C2C2C
                text-align: center
                transition: 0.5s

            .arrow--btn:hover
                background-color: #232323
                transition: 0.5s
                
        .hidden
            transform: translateX(0%)

        .transition
            transition: 0.5s




        

    
    
