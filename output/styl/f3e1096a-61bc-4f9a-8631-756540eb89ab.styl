.principles
  position relative
  &__
    &header
      height 60px
      display flex
      align-items center
      justify-content center
      width 100%
      +lg()
        height 85px
        justify-content flex-start
        border-radius 5px 5px 0 0 
        background-color $light-blue-3
        padding 0 30px
    &title
      color $purple-light
      font-size 18px
      font-weight 700
      line-height 30px
      +lg()
        color $color-white
        font-size 30px
    &block-title
      box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
      background-color $color-white
      padding 20px 45px 20px 10px
      margin 10px 0
      position relative
      +lg()
        background-color inherit
        box-shadow unset
        margin 0
        padding 20px 30px
      &:after
        @extend $icon
        display inline-block
        content $icon-pluse-2
        position absolute
        color $main-green
        right 10px
        top calc(50% - 11px)
        font-size 19px
        +lg()
          content $icon-play-arrow !important
          font-size 12px
          top calc(50% - 6px)
          color $color-white
          right 20px
          
      &.is-active
        background-color $light-blue
        +lg()
          background-color: $light-blue-4
        &:after
          @extend $icon
          display inline-block
          content $icon-minus-2 !important
          position absolute
          color $color-white
          right 10px
          top calc(50% - 2px)
          font-size 4px
          +lg()
            content $icon-play-arrow !important
            font-size 12px
            top calc(50% - 6px)
            right 20px
            
        .principles
          &__
            &caption
              color $color-white
    &caption
      color $purple-light
      font-size 16px
      font-weight 500
      +lg()
        color $color-white
        font-size 18px
    &block
      display none
      +lg()
        position absolute
        left 480px
        width calc(100% - 480px)
        height 100%
        top 0
        align-items center
      &.is-open
        display block
        +lg()
          display flex

    &item
      margin 20px 0
      color $purple-light
      font-size 16px
      font-weight 400
      line-height 16px
      padding-left 30px
      position relative
      +lg()
        color $purple-light
        font-size 20px
        font-weight 500
        line-height 36px

      &:before
        @extend $icon
        display inline-block
        content $icon-cheked
        color $main-green
        font-size 17px
        left 0px
        position absolute
        +lg()
          top 9px
    &body
      +lg()
        width 400px
        border-radius 5px
        background-color $light-blue