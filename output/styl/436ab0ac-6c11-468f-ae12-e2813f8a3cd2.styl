	float right
}
.mgt15{
	margin-top 15px;
}
.mgt10{
	margin-top 10px;
}
.tranItem{
	transition: 0.5s;padding: 0.375rem 0.75rem;font-size: 1rem;line-height: 1.5;color: #55595c;border: 1px solid #cfdadd;box-shadow: none;height: 28px
}
.addP i,.TagListGrid i,.DepListGrid i{
	cursor pointer
}
.filterItemBody{
	overflow-y auto
	.filterInput{
		width 100%;
	}
	.itemFrom{
		padding 5px;margin-bottom 0;
		label{
			color $fcolor;font-weight 500
		}
		input:hover{
			border: 1px solid #666;
		}
		input:focus{
			outline: none !important;box-shadow: none;border: 1px solid #2ec4e8;
		}
		textarea{
			width 100%;
		}
		input::-moz-placeholder {
		  	color: #999;
		  	opacity: 1;
		}
		input:-ms-input-placeholder {
		  	color: #999;
		}
		input::-webkit-input-placeholder {
		  	color: #999;
		}
		.ml15{
			margin-left 5px;
		}
		i{
			cursor pointer
		}
	}
	.Step4Page .addP table th{
		text-align left !important
	}
	.Step2Page .TagListGrid table th{
		text-align left !important
	}
	.Step3Page .DepListGrid table th{
		text-align left !important
	}
	.lh28{
		line-height 28px;
	}
	.required .paradiv span{
		color red;
	}
}
.itemPageContext{
	.StepBody{
		padding 25px 0;
	}
	.show{
		display inline-block !important
	}
}
.disnone{
	display none;
}
.item_red{
	color red;
}
.itemIcon{
	width 24px;height 24px;
	background url(icon-sprite.svg) no-repeat -6px -762px
}
.tdnoborder table tbody tr td{
	border-top none !important
}
.tdnoborder > table > tbody > tr > td{
	&:nth-child(1){
		width 3%;
	}
	&:nth-child(2){
		width 30%;
	}
	&:nth-child(3),&:nth-child(4){
		width 25%;
	}
}
.removepross{
	display inline-block;margin-top 5px;color #0275b8;cursor pointer
}
.StepBodyOver{
	max-height 400px;overflow-y auto;overflow-x hidden
}
.smaster_span,.key_span{
    height: 28px;padding: 0 15px;display: inline-block;background: #2ec4e8;line-height: 28px;color #fff;cursor pointer
}
.lh20{
	height 20px;line-height @height
}
.w100{
	width 100%
}
.key_span{
	border none;
}
.popItemList{
	overflow-x hidden;overflow-y auto;background #fff;
	.modal-header{
		background #ccc;
	}
	ol,ul,li {
		list-style: none;margin:0;padding:0;
	}
	ul{
		li{
			height 32px;cursor pointer;border-bottom 1px solid #ccc;
			&.liHover:hover{
				background #ccc;
			}
			&.cur{
				background #ccc
			}
			span:nth-child(1){
				width 30%;
			}
			span:nth-child(2){
				width 35%;
			}
			span:nth-child(4){
				width 15%;
			}
			span:nth-child(3),span:nth-child(5){
				width 10%;
			}
			.wname{
				width 40% !important;
			}
			.wkey{
				width 60% !important;
			}
		}
		span{
			display inline-block;white-space nowrap;overflow hidden;text-overflow ellipsis;height 32px;line-height @height
		}
	}
}
.kdo_container .kdo_cotent.kdo_cotent_item{
	width 100%
}
.padd0{
	padding 0;
}
.Tagbtn{
	border none;background #2ec4e8 !important
}
.HongListGrid tbody tr:hover{
	background #e4e4e4 !important;
}
.actionList{
	span{
		display inline-block
	}
	.comSpan{
		width 85px;position relative;top 9px;
	}
	.tranItem{
		height 26px;
	}
	.key_span{
		height 26px;
	}
	.inputSelect{
		position relative;
		.pUl{
			position absolute;width 100%;border 1px solid #cfdadd;max-height 120px;border-top none;overflow-y auto;line-height 24px;color #646464;padding 0;background #fff;z-index 100;display none
			li{
				cursor pointer;width 100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;padding 0 5px;white-space nowrap;overflow hidden;text-overflow ellipsis;
			}
			.result-selected{
				color #ccc;background transparent;cursor default
			}
		}
	}
	.pSelect{
		width 100%;position relative;overflow-y autp
	}
	.pDiv{
		transition: 0.5s;font-size: 1rem;line-height: 2;color: #55595c;border: 1px solid #cfdadd;box-shadow: none;width 100%;text-indent 5px;min-height 26px;
		div{
			border 1px solid #e3e3e3;color #333;cursor pointer;display inline-block;margin-left 5px;height 20px;margin-top 2px;
			span{
				text-indent 0;line-height 1.5
			}
			span:nth-child(1){
				max-width 80px;white-space nowrap;overflow hidden;text-overflow ellipsis;
			}
			span:nth-child(2){
				margin-left 5px;font-size 19px;height 19px;font-weight 700;margin-top -5px;float right
			}
		}
		&:hover{
			border: 1px solid #666;
		}
		&:focus{
			outline: none !important;box-shadow: none;border: 1px solid #2ec4e8;
		}
	}
}
.UlList{
	border 1px solid #ccc;height 100px;line-height 24px;overflow-y auto;padding 0
	li{
		width 100%;overflow hidden;text-overflow ellipsis
		&:hover{
			background-color #ccc
		}
	}
}
