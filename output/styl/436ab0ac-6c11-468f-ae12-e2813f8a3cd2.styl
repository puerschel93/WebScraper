.inputBox{
	position relative;float left;margin-top 7px;z-index 150
	.inputLeft{
		float left;width 270px;
		.disabledInput{
			border 1px solid #e3e3e3;background-color #fff;box-shadow:inset 0 1px 1px rgba(0,0,0,.075);height:26px;padding:3px 6px;font-size:13px;line-height:1.42857143;border-radius 0;
		}
	}
	.inputbottom{
		float left;background #eeeeee;color #333333;height 26px;padding 0 8px;cursor pointer
		span{
			margin-top 6px;
		}
	}
	.popSbox{
		border 1px solid #e3e3e3;padding 15px;position absolute;top 26px;background #fff;border-top none;display none;
		.combobox-text{
			float left
		}
		.popSboxUl{
			padding 0;
			li{
				display inline-block;width 100%;margin-top 15px;
			}
		}
	}
