	position relative;
	.triggerSum{
		cursor pointer;
	}
	.popDlog{
		position absolute;padding: 10px 10px 0 10px;background-color: #fff;border: 1px solid #ccd5d9;border-bottom-color: #c9d3d7; -webkit-box-shadow: 0 4px 20px 0 rgba(118, 141, 153, 0.5);-moz-box-shadow: 0 4px 20px 0 rgba(118, 141, 153, 0.5);box-shadow: 0 4px 20px 0 rgba(118, 141, 153, 0.5);z-index 100;display none;text-align left !important;
