min(a) {
  @media (min-width: a)
  { block; }
}

max(a) {
  @media (max-width: a)
  { block; }
}

wh(w, h = w) {
  width: w
  height: h
}

py(t, b = t) {
  padding-top: t
  padding-bottom: b
}

px(l, r = l) {
  padding-left: l
  padding-right: r
}

my(t, b = t) {
  margin-top: t
  margin-bottom: b
}

mx(l, r = l) {
  margin-left: l
  margin-right: r
}

bg(src) {
  background: url(src) center no-repeat
  background-size: 100% auto;
}

absolute() {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

fixed() {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

absolute-top() {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
}

fixed-top() {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
}

absolute-bottom() {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
}

fixed-bottom() {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
}

absolute-right() {
  position: absolute;
  bottom: 0;
  right: 0;
  top: 0;
}

fixed-right() {
  position: fixed;
  bottom: 0;
  right: 0;
  top: 0;
}

absolute-left() {
  position: absolute;
  bottom: 0;
  left: 0;
  top: 0;
}

fixed-left() {
  position: fixed;
  bottom: 0;
  left: 0;
  top: 0;
}

center() {
  display: flex;
  align-items: center;
  justify-content: center;
}

ai-center() {
  display: flex;
  align-items: center;
}

ai-start() {
  display: flex;
  align-items: flex-start;
}

ai-end() {
  display: flex;
  align-items: flex-end;
}

jc-between() {
  ai-center()
  justify-content: space-between;
}

scroll($trackColor = #dfe5eb) {
  &::-webkit-scrollbar {
    width: 4px;
    height: 4px;
  }
  &::-webkit-scrollbar-thumb {
    background: #385D87;
    border-radius: 10px;
  }
  &::-webkit-scrollbar-thumb:hover {
    background: #385D87;
  }
  &::-webkit-scrollbar-track {
    background: $trackColor;
  }
}
