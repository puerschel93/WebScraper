/**
 * type
 */

// font names:
// - europa, (weights?)
// - bebas-neue, 400
// - freight-sans-pro, (weights?)
// - freight-text?
// - icons

h1, h2, h3, h4, h5, h6
  margin 0

.wf-loading
  h1, h2, h3, h4, h5, h6, p
    visibility hidden

.left
  text-align left !important
.right
  text-align right !important
.center
  text-align center !important

.uppercase
  text-transform uppercase

/**
 * headings
 */

.heading
  font-family 'europa'
  font-size 3em
  +below(res-mobile)
    font-size 2em

.heading-main
  font-family 'europa'
  font-size 3.7em
  margin-top -5px
  white-space nowrap

.heading-tiny
  font-family 'freight-sans-pro'
  font-size 1em
  font-weight 500
  letter-spacing .5px

.heading-huge
  font-family 'europa'
  font-size 5em
  +below(res-mobile)
    font-size 3em

.heading-col
  font-family 'europa'
  font-size 1.2em
  font-weight 100

.heading-numbered
  font-family 'acumin-pro-extra-condensed'
  font-size 30px
  font-weight 600
  letter-spacing .6px
  color clr-dusk
  lineWidth = 100px
  span
    display inline-block
    position relative
    &:before
      content ''
      background clr-dusk
      width lineWidth
      height 4px
      position absolute
      top 50%
      right -(lineWidth) - 20px
      transform translateY(-50%)
  & ~ * /* consider putting the negative indent on the header itself */
    margin 30px 0 0 40px

.heading-sub
  font-family 'europa'
  font-size 2em
  +below(res-mobile)
    font-size 1.5em
.with-width
  max-width 350px

.heading-diamond
  font-family 'europa'
  width 30px
  height 30px
  line-height 30px
  font-size .9em
  position relative
  text-align center
  margin 30px auto
  &:before
    content ''
    position absolute
    top -2px
    bottom -2px
    left -2px
    right -2px
    border 2px solid rgba(230, 230, 231, .4)
    transform rotate(45deg)

.no-backgroundcliptext .heading-vertical
  color clr-red
  background none

.heading-vertical
  font-family 'acumin-pro-extra-condensed'
  font-size 20px
  font-weight 500
  letter-spacing 6.5px
  position absolute
  left 50px
  white-space nowrap
  transform rotate(-90deg)
  transform-origin left center
  z-index 8
  display inline-block
  float left
  text-gradient-animated()
  &.short
    margin-top 50px
  &.long
    margin-top 100px
  &.inversed
    float right
    left initial
    right 50px
    transform rotate(90deg)
    transform-origin right center
  +below(res-mobile)
    left 20px
    font-size 16px
    &.inversed
      right 20px

/**
 * text
 */

.text-norm
  font-size 1.1em
  font-weight 300
  line-height 34px
  text-align left
  margin-bottom 30px
  a
    color clr-red

.text-bold
  font-weight 600

.text-col
  font-size 19px
  font-weight 300
  line-height 34px
  margin-bottom 30px
  width 100%
  margin-bottom 30px

.col-custom-1
  .text-head
    margin-bottom 5px

.text-col-list
  margin-left 20px

.text-head
  @extend .text-col
  font-size 23px

.text-wide
  @extend .text-norm
  width 100%
  max-width 700px
  margin 0 auto 30px
.li
  @extend .text-norm
  width 100%
  max-width 700px
  margin 0 auto 30px

.text-cutout
  opacity 0.3

// .backgroundcliptext .text-gradient
//   text-gradient-animated()

// .no-backgroundcliptext .text-gradient
//   color clr-red

.text-gradient-alien
  text-gradient(clr-purple, clr-blue)

.text-gradient-fire
  text-gradient(clr-red, clr-magenta)

.text-gradient-ocean
  text-gradient(clr-green, clr-blue)

.text-quote
  font-family 'europa'
  font-size 2em
  +below(res-mobile)
    font-size 1em

.text-animated
  color clr-purple
  animation changeColor 70s infinite
  will-change color
  transform translateZ(0)
  @keyframes changeColor
    0%
      color clr-purple
    20%
      color clr-blue
    40%
      color clr-green
    60%
      color clr-orange
    80%
      color clr-pink
    100%
      color clr-purple

.border-animated
  border-color clr-purple
  animation changeBorderColor 70s infinite
  will-change border-color
  transform translateZ(0)
  @keyframes changeBorderColor
    0%
      border-color clr-purple
    20%
      border-color clr-blue
    40%
      border-color clr-green
    60%
      border-color clr-orange
    80%
      border-color clr-pink
    100%
      border-color clr-purple
