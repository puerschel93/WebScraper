.block
  margin-bottom 12px
  padding 10px
  background-color lighten($colorDecorative, 10)
  background-image linear-gradient(to right, lighten($colorDecorative, 10), #fff)
  box-shadow 0 2px 0 $colorDecorative

  +above(768px)
    padding 15px
  &_flat
    border none
    background #fff
    box-shadow none
  &_transparent
    background none
  &_no-padding
    padding 0
  &_middle
    width: 100%
    max-width 828px
    margin: auto

  &_in-block
    &&
      border-top 2px solid $colorDecorative

      +above(768px)
        margin 0 -24px 0
        padding 15px 24px

  &__footer
    margin-top 24px
    display flex

    &_align-content
      &_right
        justify-content flex-end

      &_between
        justify-content space-between

  &__footer-view
    position relative
    width 200px
