					padding: 10px 15px
					border-radius: 18px
					box-shadow: 0 4px 4px rgba(0, 0, 0, .25)
					background: #fff
					color: #1aaaff
					box-sizing: border-box
					border: 2px solid #fff
					font-size: 14px
					width: 140px
				.no-outline-btn
					outline: none
		.homeContent
			.leftSide
				.sign-up-box
					margin-top: 7px !important
	.animated
		align-self: center
		margin-top: 53px
	.discover-panel
		display: none
	.give-panel
		display: none
	.subscribe-panel
		display: none
	.footer
		display: none
	.mobile-giving-panel
		margin-top: 56px
		display: flex
		flex-direction: column
		align-items: center
	.mobile-subscribe
		margin-top: 75px
		background-color: #1AAAFF
		border-radius: 15px
		display: flex
		flex-direction: column
		align-items: center
	.mobile-footer
		margin-top: 20px
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
	.mobile-footer-links
		text-align: left
	.nonprofit-slider
		.slick-list
			display: -webkit-box
	.nonprofit-plan-panel
		display: none
	.nonprofit-subscribe-panel
		display: none

