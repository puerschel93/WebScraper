@import theme

@font-face
    font-family DroidSansMono
    src local("Droid Sans Mono"), url(/fonts/droidsansmono.css)

monospace = "DroidSansMono", "Inconsolata", "Consolas", "monospace"

.nav,
.pagination,
.carousel,
.panel-title a
    cursor: pointer

.since
    absolute top 2em right 3em
    font-size 0.8em

.responses
    .metadata
        margin 1em 0 1em 0

.navbar-custom
    position: fixed;
    top: 0;
    left: 0;
    border-radius: 0;
    border-bottom-width: 0
    // border-color: rgba(204, 204, 204, 0.8)
    // background-color: rgba(255,255,255,.9);
    z-index: 2000;

    .navbar-nav > .active
        border-bottom-width: 2px
        border-bottom-style: solid
        border-bottom-color: transparent

        &:hover
            border-bottom-color: link-color
        
        & > a
            // background dark
            opacity 0.9

.navbar-custom,
.navbar-header
    width: 100%;

pre,
code,
kbd,
samp
    font-family monospace

basic-border = 1px solid #ccc

pre
    white-space pre
    white-space pre-wrap
    word-wrap break-word
    padding 15px


body,
select,
input,
textarea
    font-weight normal

body
    padding-top 50px

.navbar-header
    font-weight 400

    .navbar-brand
        // color dark
        font-size 24px

sidebar-width = 20%

.endpoint-list
    .endpoint-filter
        .filter
            border 1px solid link-color
            &:hover
                border-color lighten(link-color, 20%)

#io-footer
    fixed bottom left
    color text-color
    background-color body-bg
    padding 1em

    height: 50px
    width: 100%
    z-index: 10

    .tech
        absolute top 1em right 1em

.sidebar
    fixed top 50px left
    width sidebar-width
    box-sizing border-box
    padding-right 0
    padding-top 15px

    @media screen and (max-width: 750px)
        relative top 90px left 0
        padding 1em 1em 0 1em
        width: 100%

    .filter
        padding-left 0.5em
        padding-right 0.5em

    .endpoints
        margin-top 15px
        width 100%
        overflow auto
        max-height 150px

        li > a
            padding 5px 15px
            border-radius 0

        @media screen and (min-width: 800px)
            max-height 88%

focussed-menu()
  color: white;
  background-color: #656d78;
  outline: none;

centered(n)
    width n
    margin-left auto
    margin-right auto

.add-api.btn
    margin-top 3em

.card
    float: left
    width: 340px
    height: 140px
    margin: 2em 0 0 2em

    .panel-heading
        background-color jumbotron-bg


.endpoint.card
    height: 280px

.endpoint-view > .endpoint
    position absolute
    box-sizing border-box
    left sidebar-width
    width 100% - sidebar-width

    @media screen and (max-width: 750px)
        absolute top 360px left 0
        width: 100%

    padding-left 0
    padding-right 0

    .header
        border-radius 0

    .tabbable > .tab-content
        padding 0

    .tabbable > .nav-tabs a
        font-weight bold

.api-list
    list-style-type none
    centered 80%
    clearfix()

    li
        margin 0.5em
        padding 2em
        border 1px solid #ccc
        display inline-block
        a
            font-size 2em
        &:hover
            background #4a9cc5
            a
                color white

form.custom
    centered 80%
    padding 2em

.muted
    opacity 0.8

.method

    & > .auth-info
        float right
        .label
            font-size 14px

    .summary
        position relative

    .panel.parameters
        textarea.xml
            min-height 120px
        .method-body
            textarea
                min-height 200px

    padding 2em

    .summary .description
        centered 80%
        text-align justify

        code
            white-space pre

    pre
        font-size 12px
        overflow auto
        border 1px solid rgba(0, 0, 0, 0.2)
        background-color rgba(255, 255, 255, 0.4)

        &.response
            max-height 500px

        &.error
            background-color rgba(255, 66, 66, 0.2)


    accordion .panel
        max-width 90%
        .panel-title
            font-weight bold

    .results
        td
            font-family monospace
            font-size 0.9em

    .panel.api-response
        box-shadow 0 0 2px darken(body-bg, 15%)

.method .description,
.from-html
    code
        font-size 75%
    table
        width 100%
        border-collapse collapse
        margin-bottom 1em

        th,
        td
            padding 0.2em 1em

        tbody > tr > td
            font-family monospace
            font-size 0.9em

.parameter
    button.boolean
        margin-left 5em
    .caption
        padding 0.5em
        .description
            font-size 0.9em
        .type
            margin-left 3em
            font-family monospace
    .is-active
        float right

/**
 * dropdown-menu
 * --------------------------------------------------
 */
.dropdown-menu
    border: none;
    background-color: #434a54;

    .dropdown-header
        padding: 5px 20px;
        font-size: 14px;
        font-weight: 700;
        color: #aab2bd;

    li a
        padding: 5px 20px
        color: white
    
        &:hover,
        &:focus
            focussed-menu()

    .active
        a,
        a:hover,
        a:focus
            focussed-menu()
    
    .disabled a
        color: #656d78;
        cursor: default;
        
        &:hover
            color: #656d78;
            cursor: default;
        
    .divider
        background-color: #656d78;
        border-bottom: none;

.endpoint-card.panel

    border-color dark

    & > .panel-heading
        color #ffffff
        background-color dark
        border-color dark

        a
            color #ffffff

.api-auth
    .input-group > input.basic
        width: 50%

.endpoint-list
    position relative
    .endpoint-filter
        fixed top 65px right -1px
        max-width 20%
        .input-group-addon
            width 24px

.errors
    fixed top 50px
    width 100%

    .alert
        opacity 0.9

.endpoint .tab-content
    relative top -1px
    border-top 1px solid nav-tabs-link-hover-border-color

.endpoint .nav-tabs > .active > a
    background-color brand-primary
    color navbar-inverse-link-color
    border-color brand-primary

    &:hover,
    &:focus
        background-color brand-primary
        color navbar-inverse-link-color
        border-bottom-color brand-primary

