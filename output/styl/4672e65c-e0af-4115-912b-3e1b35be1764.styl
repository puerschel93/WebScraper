.hero-area-container
    width: 100%;
    position relative
    display: flex;
    align-items: center;
    justify-content: center
    overflow: hidden
    background-image: radial-gradient(circle at 72% 100%, #56b8d3, #2b7da1 60%);
    +media-md()
        background: none
    > img
        max-width: 100%
        display: none
        +media-md()
            display: block
