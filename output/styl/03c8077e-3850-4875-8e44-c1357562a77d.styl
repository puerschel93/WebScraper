// ---------------
// Color Variables
// ---------------

// clrs.cc Colors
$navy   = #001f3f
$blue   = #0074D9
$aqua   = #7FDBFF
$olive  = #3D9970
$green  = #2ECC40
$yellow = #FFDC00
$red    = #FF4136
$maroon = #85144b
$silver = #DDDDDD


// My Colors
$orange     = rgb(238, 162, 54)
$darkOrange = #FF851B
$purple     = #7100FF
$lightBlue  = #08c
$darkBlue   = #00679A
$blueHover  = #243E77
$lightRed   = #F14040
$darkRed    = #D00404
$darkerRed  = #920303
$grey       = #E8E8E8

// ------------
// Angular Animation
// ------------

.ng-leave
.ng-leave-active
  display: none

// ------------
// Label Clases
// ------------

.label.label-purple
  background: $purple

.label.label-orange
  background: $orange 
    
.label.label-darkBlue
  background: $darkBlue
  
.label.label-primary
  background: $blue
  
.label.label-success
  background: $olive

.label.label-danger
  background: $red

.label.label-warning
  background: $orange
  
.label.label-inverse
  background: $maroon
// -------------------
// Font Awesome Clases
// -------------------

.fa-edit-stack
  cursor: pointer

.fa-edit-stack > a > i.fa-stack-2x
  color:#F74803 !important

.fa-edit-stack:hover > a > i.fa-stack-2x
  color: rgb(255, 108, 50) !important

.fa-stack-in-label > .fa-stack-2x
  top: 4px
  left: 0px
  font-size: 1.4em
  
.fa-super
  font-size: 0.7em
  vertical-align: super

// -------------
// Helper Clases
// ------------- 

.minus-margin-top
  margin-top: -7px

.spinner-container
  min-height: 100px
  display: block

.unselectable
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

.padding
  margin-top: 10px
  margin-bottom: 10px
  
.add-padding
  padding: 15px
  
.full-width
  width: 100%

.pointer
  cursor: pointer
  
.row.row-padding-bottom
  padding-bottom: 10px
  
.row.row-padding-bottom:last-child
  padding-bottom: 0px
  
.center-block-vertically
  position: relative
  top: 50%
  transform: translateY(30%)
  
.bg-blue
  background-color: $blue

// --------------
// Sidenav Clases
// --------------

.side-nav-block > ul.list-unstyled > a:hover
  color: #fff

// ------------
// Image Clases
// ------------

.img-responsive-gux
  max-height: 160px
  margin: auto
  height: inherit

// -----------
// Form Clases
// -----------

.form-control
  opacity: .8 !important
  color: #000 !important

.form-control:hover,
  opacity: 1 !important
  border: 1px solid $darkBlue !important

.form-control:focus
  opacity: 1 !important
  border: 1px solid $lightBlue !important
  box-shadow: none
  
.row-multiple-addresses
  margin-bottom: 10px

// --------------
// Heading Clases
// --------------

h4
  padding-top: 5px !important
  
// ----------
// Text Clases
// ----------

.text-orange
  color: $orange
  
.text-orange:hover
.text-orange:focus
.text-orange:active
  color: $darkOrange

.text-darkRed
  color: $darkRed

.text-darkRed:hover
.text-darkRed:focus
.text-darkRed:active
  color: $darkerRed
  
.text-muted
  opacity: .6 !important

.text-remove
  color: $darkRed
  
.text-remove:hover
.text-remove:focus
  color: $lightRed
  
.text-remove:visited
  color: $darkerRed

// -----------
// List Clases
// -----------

.list-inline > li
  display: inline-block
  padding-right: 0
  padding-left: 0
  padding-top: 5px
    
ul.list-text-hover > li:hover
  cursor: pointer
  color: $lightBlue  

.list-inline-tags
  margin-top: -10px
  margin-left: 0px

// -------------
// Button Clases
// -------------

.btn-same-width-25 > button.btn
  width: 25px
  
.btn-block.btn-block-5 > button
  width: 20%

.btn-block.btn-block-4 > button
  width: 25%
  
.btn-block.btn-block-2 > button
  width: 50%

.btn.btn-primary
  background: $blue 
  
.btn-with-badge > .btn
  height: 36px
  
// ------------
// Badges
// ------------

.badge.badge-primary
  background-color: $blue;

// ------------
// Table Clases
// ------------


.table > tbody > tr > td
  vertical-align: middle

.table > tbody > tr > td.padding-right-0
  padding-right: 0

.table > tbody > tr > td.padding-0
  padding: 0
  
.table-hover > tbody > tr:hover
  background-color: $grey
 
.table > thead > tr > th.th-pointer
  cursor: pointer
  
.table-first-border-top-none > tbody > tr:first-child > td
  border-top: none
  
.table.table-margin-bottom-0
  margin-bottom: 0
  
.table.table-padding-left-0 > tbody > tr > td
  padding-left: 0

/*  
.table-hover > tbody > tr:hover > td > ul.list-text-hover > li > i
.table-hover > tbody > tr:hover > td > ul.list-text-hover > li > dt > i
  color: $orange
*/

// -------------
// QRcode Styles
// -------------
div#qrcode > img
  width: 100%
  padding: 30px
  
// -------------
// panels
// -------------

.panel-hover
  opacity: 0.8 !important
  
.panel-hover
  opacity: 1 !important

.panel-hover:hover > .panel-heading
.panel-hover:hover > .panel-footer
  background-color: #F1F1F1

// -------------
// span wells
// -------------

$primary = $navy
$danger  = #FF4136
$success = $olive

.span-well
  border-width: 2px
  border-style: solid
  border-color: $grey
  color: $grey
  width: 100%
  display: block
  padding: 15px
  border-radius: 15px
  margin-top: 15px
  opacity: 0.8
  
.span-well:hover
  opacity: 1
  cursor: pointer

.span-well.no-margin-top
  margin-top: 0
  margin-left: 15px

.span-well > .span-well-heading
  min-height: 40px
  
.span-well.no-margin-top > .span-well-heading
  min-height: 0

.span-well.span-well-primary
  color: $primary
  border-color: $primary  

.span-well.span-well-danger
  color: $danger
  border-color: $danger
  
.span-well.span-well-success
  color: $success
  border-color: $success

.span-well.span-well-primary > .span-well-heading
  color: $primary
  
.span-well.span-well-danger > .span-well-heading
  color: $danger
  
.span-well.span-well-success > .span-well-heading
  color: $success
  
.span-well > .span-highlight
  color: white
  padding: 2px
  margin-left: -15px
  margin-right: -15px
  
.span-well.span-well-primary > .span-highlight
  background-color: $primary
  
.span-well.span-well-danger > .span-highlight
  background-color: $danger
  
.span-well.span-well-success > .span-highlight
  background-color: $success
  
.span-well > p.span-well-observation
  font-size: 9px
  line-height: 12px
  margin-top: 5px
  text-align: left
  
// -------------------
// Modal Classes
// -------------------

.modal-content.modal-min-300
  min-height: 300px
  
.modal-content.modal-min-650
  height: 690px
  .modal-body
    height: 570px
    
// -------------------
// More Info
// -------------------

.more-info:hover
  color: $blue
  
.more-info > a
  color: inherit
  
.more-info > a.more-info-anchor > i.fa
  margin-top: -7px
  background-color: white
  padding-left: 20px

.more-info > a.more-info-anchor > hr
  border-top: 2px solid
  border-color: #E6E6E6
  margin: 0
  margin-top: -12px
  
.more-info:hover > a.more-info-anchor > hr
  border-color: $blue

.more-info > a.more-info-anchor > strong
  background-color: white
  padding-right: 20px
  margin-right: 12px
  display: inline
  
.align-image-vertically-160
  line-height: 160px;
  
.align-image-vertically-160 > img
  vertical-align: middle
  
.align-image-vertically-50
  line-height: 50px;
  
.align-image-vertically-50 > img
  vertical-align: middle
  max-height: 60px
  max-width: 180px
  display: block;
  margin: 0 auto;
  
///////////////////
// Notifications
///////////////////

.notification
  padding: 15px
  background-color: $grey
  border-radius: 5px
  width: 100%
  display: block
  
.notification-blue
  background-color: $blue
  color: white
  
.notification-orange
  background-color: $orange
  color: white
  
/////////////////////////
// Meraki Product Panel
/////////////////////////

.meraki-product-panel-container
  height: 500px
  overflow: auto

.meraki-product-panel
  .panel-heading
  .panel-footer
    height: 30px
  .btn-xs
  .input-group
    margin-top: -5px
  .input-group > input
    margin-top: 0
    height: 20px

////////////////////
// Gux Sidebar Nav
////////////////////

.sidebar-nav.gux-sidebar-nav > .well > ul.nav
  margin-left: 0
  margin-bottom: 20px
  list-style: none
  
.sidebar-nav.gux-sidebar-nav > .well > ul.nav.nav-list
  padding-left: 15px
  padding-right: 15px
  margin-bottom: 0
 
.sidebar-nav.gux-sidebar-nav > .well > ul.nav.nav-list > li
  line-height: 20px

.sidebar-nav.gux-sidebar-nav > .well > ul.nav.nav-list > li.nav-header
  margin-left: -15px
  margin-right: -15px
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5)
  display: block
  padding: 3px 15px
  font-size: 11px
  line-height: 20px
  color: #999999
  text-transform: uppercase
  
.sidebar-nav.gux-sidebar-nav > .well > ul.nav.nav-list > li > a
  padding: 3px 15px
  margin-left: -15px
  margin-right: -15px
  display: block
  text-decoration: none
  
.sidebar-nav.gux-sidebar-nav > .well > ul.nav.nav-list > li > a.active
  color: white
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2)
  background-color: $blue
  
.sidebar-nav.gux-sidebar-nav > .well > ul.nav.nav-list > li > a > i
  color: black
  width: 20px
  
.sidebar-nav.gux-sidebar-nav > .well > ul.nav.nav-list > li > a.active > i
  color: white