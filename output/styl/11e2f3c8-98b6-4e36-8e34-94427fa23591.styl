html, body, #app, .theme-container {
  position: relative;
  width: 100vw;
  height: 100vh;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  margin-bottom: 0.5rem;
  font-family: "Montserrat", sans-serif;
  font-weight: 700;
  line-height: 1.44;
  color: inherit;
  text-transform: uppercase;
  letter-spacing: 0.2em;

  img {
    max-height 1.5rem
  }
}

#app {
  .global-ui {
    position relative
    z-index 100
  }

  .home .hero img {
    max-height 220px
  }

  .content {
    img {
      max-width 100% !important
    }
  }

  code {
    overflow-wrap break-word

  }

  .navbar {
    //border-bottom 1px solid $colorGray
    border-bottom: none;
    box-shadow 0px 0px 15px 0px rgba(132, 132, 132, 0.2) !important;

    .nav-links {
      margin-top: 0.2rem;
    }
  }

  .search-box {
    margin-right 1.5rem

    input {
      background: #fff url(https://gw.alipayobjects.com/zos/bmw-prod/72262c89-1d96-442d-bdcf-e4e50d10bd42.svg) 0.1rem 0.3rem no-repeat;
      background-size: 1.5rem;
      -webkit-appearance: none;
      border-radius 0
      border-style: solid;
      border-style: unset;
      border-bottom: 1px solid lighten($colorInactive, 50%);
      transition all 0.3s;

      &.focused {
        border-bottom: 1px solid $colorFont;
      }
    }

    .suggestions {
      font-size 1rem
      padding 0.5rem
      display block !important;
      font-family: clear;
      font-style: normal;
      font-weight: lighter;
      top: 2rem;
      border none;
      box-shadow 0px 0px 15px 0px rgba(132, 132, 132, 0.2);

      .page-title {
        font-weight: normal;
      }

      .header {
        font-weight: normal;
      }
    }
  }
}


