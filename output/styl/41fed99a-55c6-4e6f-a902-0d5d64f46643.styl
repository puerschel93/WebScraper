#home
  width 100%
  height 100%

  .pink
    width 65%
    height 100%
    // background #FFEDF7
    position absolute

  .ping-bg
    width 100%
    height 100%
    background #FFEDF7

  .pink-outside
    position absolute
    width 406px
    height 406px
    border-radius 50%
    border-style solid
    border-width 4px
    border-color #FF4384
    left 100%
    top 50%
    transform translate(-50%,-50%)

  .pink-inside
    position absolute
    width 375px
    height 375px
    border-radius 50%
    background #FF4384
    border-style solid
    border-width 4px
    border-color #FF4384
    left 100%
    top 50%
    transform translate(-50%,-50%)
    z-index 1

  .rightSquare
    position absolute
    left 100%
    top 50%
    transform translateY(-50%)
    width 200px
    height 400px
    overflow hidden
    
  .leftSquare
    position absolute
    right 0%
    top 50%
    transform translateY(-50%)
    width 200px
    height 400px
    overflow hidden

  // 動畫分開寫，不然換場時會延續
  .rightCircle
    position: absolute
    right 0%
    top 0%
    width 400px
    height: 400px
    border-radius: 50%
    border 15px solid transparent
    border-top-color #FF4384
    border-right-color #FF4384
    transform: rotate(-135deg)

  .leftCircle
    position: absolute
    left 0%
    top 0%
    width 400px
    height: 400px
    border-radius: 50%
    border 15px solid transparent
    border-left-color #FF4384
    border-bottom-color #FF4384
    transform: rotate(-135deg)

  // 多顯示0:0所以秒數+1
  .circleRightPink
    animation circleRightPink 1501s linear 1
  
  .circleLeftPink
    animation circleLeftPink 1501s linear 1

  .circleRightBlue
    animation circleRightBlue 301s linear 1
  
  .circleLeftBlue
    animation circleLeftBlue 301s linear 1

  @keyframes circleRightPink
    0%{
      -webkit-transform: rotate(-135deg);
    }
    50%,100%{
      -webkit-transform: rotate(45deg);
    }

  @keyframes circleLeftPink
    0%,50%{
      -webkit-transform: rotate(-135deg)
    }
    100%{
      -webkit-transform: rotate(45deg)
    }

  @keyframes circleRightBlue
    0%{
      -webkit-transform: rotate(-135deg);
    }
    50%,100%{
      -webkit-transform: rotate(45deg);
    }

  @keyframes circleLeftBlue
    0%,50%{
      -webkit-transform: rotate(-135deg)
    }
    100%{
      -webkit-transform: rotate(45deg)
    }
