@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap')

html, body
  width 100vw
  height 100vh
  font-family 'Roboto', sans-serif
  color white

#app
  height 100%
  width 100%
  background #003164

  h1
    color white
    position absolute
    font-size 24px
    font-weight bold
    top 70%
    left 92%
    writing-mode vertical-lr
    text-orientation mixed

  .times
    color white
    position absolute
    left 92%
    margin-top 40px

  .ab
    width 100%
    height 100%

  .a
    width 50%

  .b 
    width 50% 
    margin-right 150px
    
  .a a
    font-size 30px

  .a a:hover
    text-decoration none

  // icon
  .svg-inline--fa.fa-lg
    vertical-align: 0
    width 3rem

  .circle
    position relative
    width 300px
    height 150px
    background #FFEDF7
    border-radius 150px 150px 0 0

  .circle::after
    position absolute
    content ''
    left 50%
    transform translate(-50%, -50%)
    width 98px
    height 98px
    background #FF4384
    border-radius 50%
    border 7px solid #003164
    z-index 3
  
  .circle::before
    position absolute
    content ''
    left 50%
    width 100px
    transform translate(-50%, -50%)
    height 100px
    background #FF4384
    border-radius 50%
    border 2px solid #ff4384
    z-index 2

  .bigCircle
    position absolute
    left 50%
    width 110px
    transform translate(-50%, -50%)
    height 110px
    background #003164
    border-radius 50%
    z-index 1

  .time
    position absolute
    left 50%
    top 32%
    transform translateX(-50%)
    color: #FF4384
    font-size 3rem
    font-weight bold

  .current
    position absolute
    left 50%
    top 75%
    transform translateX(-50%)
    color #003164
    font-weight bold
    width 100%
    text-align center

  .play
    position absolute
    left 50%
    transform translate(-50%, -50%)
    background #FF4384
    border 0
    z-index 4
    font-size 1.4rem
    width 40px
    padding-top 10px
    color white

