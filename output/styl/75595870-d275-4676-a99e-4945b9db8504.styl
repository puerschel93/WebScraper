button.swap
	border: 1px solid Cyan;
	box-sizing: border-box;
	border-radius: 2px;

	font-family: Jura;
	font-style: normal;
	font-weight: bold;
	font-size: 14px;
	line-height: 100%;
	text-align: center;

	color: Cyan;

	background none
	cursor pointer
	outline none
	padding 5px 10px
	white-space: nowrap;
	&:hover
