@import '_fonts'
@import '_colors'



.table-options
	border-collapse: collapse;
	border: 1px solid Blue
	width: 100%;
.table-options__header
	height 42px
	background Blue
	th
		padding 5px
		font-family: Exo2;
		font-style: normal;
		font-weight: bold;
		font-size: 12px;
		line-height: 100%;
		color: #DEFEFE;
		white-space: nowrap;
		text-align: left;
		&:first-child
			padding-left 20px
.table-options__tr-vals
	height 60px
	background Dark-Blue
	border-bottom 1px solid #263B73;
	td
		padding 5px
		font-family: Exo2;
		font-style: normal;
		font-weight: 500;
		font-size: 12px;
		line-height: 100%;
		color: Ultralight-Blue
		white-space: nowrap;
		&:first-child
			padding-left 20px
	.null
		text-align: center;
		color #667fcc

.tr-vals__text
	padding-top 5px
	&.big
		font-size 14px
	&:first-child
		padding-top 0
	&.good
		color Cyan
	&.bad
		color Warning-Red
	&.additional
		color Accent-Blue
.tr-vals__box
	display flex
	.tr-vals__text
		padding-top 0
		&:first-child
			position relative
			padding-right 25px
			&:after
				content ''
				height 100%
				width 15px
				position absolute
				background url('/assets/img/arrow.svg')
				background-size: contain;
				background-repeat: no-repeat;
				background-position: center;
				right: 5px;







.category-title
	font-family: Jura;
	font-style: normal;
	font-weight: bold;
	font-size: 28px;
	line-height: 100%;
	display: flex;
	align-items: center;

	color: #FFFFFF;

	text-shadow: 0px 0px 1px #1B1B1B;
	padding-left 66px
	position relative
	margin 60px auto 35px 0
	text-transform: uppercase;

	&.nowrap
		white-space: nowrap;


	&:before
		content ''
		position absolute
		width 51px
		height 28px
		background url('/assets/img/cat-icon.svg')
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
		left 0
	@media screen and (max-width 1024px)
		padding-left 22px
		&:before
			width  12px
			height 100%
			background url('/assets/img/cat-icon--mobile.svg')
			background-size: auto;
			background-repeat: repeat-y;
			background-position: center;
	&.mobile
		padding-left 22px
		margin 0
		&:before
			width  12px
			height 100%
			background url('/assets/img/cat-icon--mobile.svg')
			background-size: auto;
			background-repeat: repeat-y;
			background-position: center;
.text
