input[type="checkbox"]
	position: relative;
	width: 20px;
	height: 20px;
	color: Cyan
	border: 1px solid Cyan;
	// border-radius: 4px;
	appearance: none;
	outline: 0;
	cursor: pointer;
	transition: background 175ms cubic-bezier(0.1, 0.1, 0.25, 1);
	margin-right 10px
	top: 4px;
	&::before
		position: absolute;
		content: '';
		top: -1px;
		left: 7px;
		width: 5px;
		height: 14px;
		border-style: solid;
		border-width: 0 2px 2px 0;
		transform: rotate(45deg);
		opacity: 0;
		display none
	&:checked
		filter: drop-shadow(0 0 1px Cyan);
		&:before
			display: block;
			// color: white;
			// // border-color: $green;
			// // background: $green;
	&::before 
		opacity: 1
		
