.button
	cursor pointer
	outline none
	margin auto 0

	font-family: Jura;
	font-style: normal;
	font-weight: bold;
	font-size: 16px;
	line-height: 100%;
	text-align: center;
	letter-spacing: 0.1em;

	height 46px
	width 265px
	// height 65px
	// width 297px
	z-index 1

	&.primary
		color: #15203D;

		background transparent
		border: 1px solid Cyan;
		box-sizing: border-box;
		border-radius: 2px;

		border: none;

		border-style: solid;
		border-image-width: 50px;
		border-image-source: url("/assets/img/button-primary.svg");
		border-image-slice: 20;
		border-image-repeat: stretch;
		&:hover
			filter: drop-shadow(0 0 10px Cyan);

		&.blue
			color Ultralight-Blue;
			border-style: solid;
			border-image-width: 50px;
			border-image-source: url("/assets/img/button-primary--juicy-blue.svg");
			border-image-slice: 20;
			border-image-repeat: stretch;
			&:hover
				filter: drop-shadow(0 0 10px Juicy-Blue);
		&:disabled
			border-style: solid;
			border-image-width: 50px;
			border-image-source: url("/assets/img/button-primary--disabled.svg");
			border-image-slice: 20;
			border-image-repeat: stretch;
			&:hover
				filter: none


	&.secondary
		color: Cyan;

		background transparent
		border: 1px solid Cyan;
		box-sizing: border-box;
		border-radius: 2px;

		border: none;

		border-style: solid;
		border-image-width: 50px;
		border-image-source: url("/assets/img/button-secondary.svg");
		border-image-slice: 20;
		border-image-repeat: stretch;
		&:hover
			filter: drop-shadow(0 0 10px Cyan);
		&.yellow
			color Warning-Yellow;
			border-style: solid;
			border-image-width: 50px;
			border-image-source: url("/assets/img/button-secondary-yellow.svg");
			border-image-slice: 20;
			border-image-repeat: stretch;
			&:hover
				filter: drop-shadow(0 0 10px Warning-Yellow);




.input
	position relative
	&.with-max
		flex-direction column
		margin-bottom 22px
		.input__max
			font-family: Exo2;
			font-style: normal;
			font-weight: 500;
			font-size: 12px;
			line-height: 100%;
			text-align: center;
			color: Ultralight-Blue
			position absolute
			bottom: -10px;
			transform: translate(0, 100%);
			&.bad
				color: Warning-Red
	&.connected
		display flex
		input
			min-height: 36px;
			max-height: 36px;
			height: 36px;
			flex 1
			outline none
			padding 10px 45px 10px 15px

			font-family: Exo2;
			font-style: normal;
			font-weight: 500;
			font-size: 16px;
			line-height: 100%;

			color: #FFFFFF;


			min-width 20px
			background: Dark-Blue
			border: 1px solid Accent-Blue
			box-sizing: border-box;
			box-shadow: inset 0px 0px 10px #0D1326;
			border-radius: 2px;
			&:active, &:focus
				border: 1px solid Cyan

			text-overflow: ellipsis;

			&:placeholder
				color: #667FCC;
			&::-webkit-input-placeholder
				color: #667FCC;
			&:-moz-placeholder
				color: #667FCC;
			&::-moz-placeholder
				color: #667FCC;
			&:-ms-input-placeholder
				color: #667FCC;

		&[data-type]
			&:after
				content attr(data-type)
				position absolute
				background-size: cover;
				background-repeat: no-repeat;
				background-position: center;
				right: 10px

				font-family: Exo2;
				font-style: normal;
				font-weight: bold;
				font-size: 14px;
				line-height: 100%;
				text-align: right;

				color: #667FCC;
				top: 50%;
				transform: translate(0, -50%);
				// text-transform: uppercase;
	&.big-padding
		input
			padding 10px 75px 10px 15px




