@import './_reset-styles.styl'
@import './_tokens.styl'

html
	font-family ffPrimary

body
	background-color veryDarkBlue
	color paleBlue
	padding 0 10px

header
	background-color darkBlue
	border-radius 20px
	max-width 360px
	margin 0 auto
	margin-top 30px

main
	max-width 360px
	margin 0 auto

.profile
	background-color blue
	border-radius 20px
	padding 20px 0
	display flex
	align-items center
	justify-content center
	&__picture
		height 60px
		border 3px solid white
		border-radius 50%
	&__description
		margin-left 20px
		&__title
			margin 0
			font-size 1.5rem
		&__name
			margin 0
			color white

.timing
	display flex
	justify-content space-evenly
	align-items center
	height 50px
	&__button
		background-color transparent
		border none
		color paleBlue
		font-weight fwThin
		cursor pointer
		&:hover
			color white
		&.active
			color white
			font-weight fwBold

.item
	border-radius 20px
	margin-top 15px
	&__background
		display flex
		justify-content flex-end
		overflow hidden
		&__image
			margin-top -10px
			margin-right 10px
			height 70px
	&.work
		background-color lightOrange
	&.play
		background-color softBlue
	&.study
		background-color lightRed
	&.exercise
		background-color limeGreen
	&.social
		background-color violet
	&.self-care
		background-color softOrange
	&__content
		position relative
		background-color darkBlue
		border-radius 16px
		margin-top -30px
		padding 20px
		transition: .5s
		cursor pointer
		&:hover
			background-color lighten(darkBlue, 10%)
		&__title
			display flex
			align-items center
			justify-content space-between
			&__text
				color white
				font-weight fwBold
				margin 0
		&__counting
			display flex
			align-items center
			justify-content space-between
			&__current
				font-weight fwThin
				color white
				font-size 3rem
				margin 0
			&__last
				font-size 1.5rem

@media screen and (min-width: 1050px)
	body
		display grid
		grid-template-columns 262px 786px
		margin 100px auto
		align-items center
		justify-content center
		overflow-y hidden

	main
		display grid
		grid-template-columns 33% 33% 33%
		grid-auto-rows 231px
		gap 20px
		max-width 700px
		margin-top 20px
		margin-left 0
		margin-right 0

	.profile
		flex-direction column
		align-items flex-start
		min-width 230px
		&__picture
			margin-left 20px
			height 70px
			margin-bottom 30px
			margin-top 10px
		&__description__name
			font-size 3.5rem
			font-weight fwThin
			max-width 150px
			margin-bottom 80px
	.timing
		flex-direction column
		align-items flex-start
		margin 40px 20px
		background-color darkBlue
		&__button
			margin-bottom 15px
			font-size 1.7rem

	.item
		width 232px
		&__content__counting
			flex-direction column
			align-items flex-start
			&__current
				margin-top 20px
				font-size 5rem
				margin-bottom 0
			&__last
				margin-top 5px
				margin-bottom 23px