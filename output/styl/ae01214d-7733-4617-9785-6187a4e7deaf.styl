.bill-verification-skrill
  font-family:Whitney
  display block
  width 370px
  position relative
  background-color: #fff
  padding 39px 39px 34px 39px
  .i-close
    position: absolute;
    top 12px
    right 14px
    font-size 12px
    color black
    cursor: pointer;
    &:hover
      color #00abec
  &__title
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.5px;
    text-transform uppercase
  &__tip
    margin-top: 14px
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.35px;
.verification-files
  display flex
  flex-direction: column;
  input
    display none
  &__choose-file
    align-items center
    margin-top: 30px
  &__submit
    margin-top: 20px
    label
      display: block;
      font-family: WhitneySemiBold
      font-size: 12px;
      font-weight: 400;
      letter-spacing: 0.35px;
      width 100%
      height: 50px
      color #fff
      border-radius 5px
      background-color: #00abec;
      text-align center
      line-height 50px
      transition all 0.3s ease
      &:hover
        transform scale(1.1)

.choose-file
  display flex
  flex-wrap wrap
  &__tooltip
    font-family Whitney
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.3px;
    padding 6px 10px
    visibility: hidden;
    width: auto;
    background-color: #f5f5f5;
    color: #555555;
    border-radius: 6px;
    position: absolute;
    z-index: 1;
    left 13px
    margin-top 4px
    box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.13);
    border: 1px solid #cccccc;
    opacity: 0;
    transition: opacity 0.3s;
    &:before
      content: "";
      position: absolute;
      top: 0;
      left: 10px;
      margin-top: -5px;
      border-left: 5px solid transparent;
      border-right: 5px solid transparent;
      border-bottom: 5px solid #ccc;
    &:after
      content: "";
      position: absolute;
      top: 0;
      left: 11px;
      margin-top: -5px;
      border-left: 4px solid transparent;
      border-right: 4px solid transparent;
      border-bottom: 5px solid #f5f5f5;
  &__file-numeration
    position relative
    font-family: WhitneySemiBold
    font-size: 13px
    font-weight: 400
    flex 0 0 100%
    padding-bottom: 13px
    &:hover
      .choose-file__tooltip
        visibility: visible;
        opacity: 1;
  &__button
    label
      transition all 0.2s ease
      display inline-block
      font-size: 14px;
      font-weight: 500;
      color: #00abec;
      border-radius 5px
      width 130px
      height 30px
      border: 1px solid #00abec;
      text-align center
      line-height 30px
      &:hover
        background-color #00abec
        color white
  &__selected-files
    flex 1
    .selected-file
      display inline-flex
      align-items center
      margin-left 14px
      .i-close
         margin-left 8px
         position: relative
         width 12px
         height 12px
         top auto
         right auto
         border: 1px solid #cccccc;
         border-radius 2px
         font-size 8px
         color #c72526
         &:hover
          animation light-shake 1s
          animation-iteration-count: infinite
  &__supported-formats
    margin-top: 6px
    flex 0 0 100%
  &__selected-files
  &__supported-formats
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.3px;

@keyframes light-shake {
  0% { transform: translate(0.5px, 0.5px) rotate(0deg); }
  10% { transform: translate(-0.5px, -0.5px) rotate(-1deg); }
  20% { transform: translate(-0.5px, 0.5px) rotate(1deg); }
  30% { transform: translate(0.5px, 0.5px) rotate(0deg); }
  40% { transform: translate(0.5px, -0.5px) rotate(1deg); }
  50% { transform: translate(-0.5px, 0.5px) rotate(-1deg); }
  60% { transform: translate(-0.5px, 0.5px) rotate(0deg); }
  70% { transform: translate(0.5px, 0.5px) rotate(-1deg); }
  80% { transform: translate(-0.5px, -0.5px) rotate(1deg); }
  90% { transform: translate(0.5px, 0.5px) rotate(0deg); }
  100% { transform: translate(0.5px, -0.5px) rotate(-1deg); }
}
