@import "./assets/styl/layout/header.styl"
@import "./assets/styl/layout/footer.styl"
@import "./assets/styl/layout/layout.styl"
@import "./assets/styl/font.styl"
@import "./assets/styl/normalize.styl"


body
    font-family font
    color #1D1C1C
    overflow-x hidden
    height 100vh
    display flex
    flex-direction column
    justify-content space-between

    @media screen and (max-width: 800px)
        background-color rgba(226, 144, 178, 0.15)


h1
    font-family fontTitle
    letter-spacing 0.2px
    text-align center
    color #CA6791

.btn
    background-color #E290B2
    color rgba(255, 255, 255, 0.8)
    letter-spacing 0.2px
    box-shadow 0px 7px 22px rgba(0, 0, 0, 0.14)
    border-radius 30px
    border none
    transition all 0.3s
    cursor pointer
    &:hover
        background-color #ca6791
        color #fff

    &-lg
        padding 14px 55px
        margin-top 30px
    &-md 
        padding 8px 27px
        font-size 15px
    &-green
        background-color #81AA94
        
        &:hover
            background-color #569372

button:disabled
    background-color #a1a1a1

    &:hover
        background-color darken(#a1a1a1, 20%)


.main-content 
    flex-grow 1

.slick-slider 
    width 600px
    position relative
    margin 0 auto
    
    @media screen and (max-width: 800px)
        width calc(100% - 40px)
        margin 20px

.slick-slide
    margin 20px
    padding 35px 67px
    background-color #fff
    box-shadow 0px 6px 30px rgba(0, 0, 0, 0.1)

    @media screen and (max-width: 800px)
        padding 20px
.slick-arrow
    width 40px !important
    height 40px !important
    background #81AA94 !important
    border-radius 50%

    &::before
        content '' !important
        display flex
        width 20px
        height  20px
        background-position center
        opacity 1
        background-repeat no-repeat
        margin-left 9px

.slick-next
    position absolute 
    right 0 !important
    top 0
    z-index 2
    &::before
        background-image url('./assets/img/arrow-right.svg')

.slick-prev
    position absolute
    left 0 !important
    top 0
    z-index 2
    &::before
        background-image url('./assets/img/arrow-left.svg')