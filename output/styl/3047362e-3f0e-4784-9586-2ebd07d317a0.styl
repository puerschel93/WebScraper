@import url('https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@400;700&display=swap');

$font-kumbh = 'Kumbh Sans', sans-serif

//Text - primary
$very-dark-desaturated-blue = hsl(238, 29%, 16%)
$soft-red = hsl(14, 88%, 65%)

//background gradient
$soft-violet = hsl(273, 75%, 66%)
$soft-blue = hsl(240, 73%, 65%)

// Text - neutral
$very-dark-grayish-blue = hsl(237, 12%, 33%)
$dark-grayish-blue = hsl(240, 6%, 50%)

// Dividers
$light-grayish-blue = hsl(240, 5%, 91%)


$card-radius = 1rem

*
  margin 0
  padding 0
  font-family $font-kumbh


body
  font-size 12px
  display flex
  justify-content center
  min-height 100vh
  align-items center
  background-image linear-gradient(to bottom, $soft-violet, $soft-blue)

.card
  box-shadow 0 40px 40px 0 rgba($very-dark-desaturated-blue, .4)
  border none
  border-radius $card-radius
  margin 1.5rem
  display flex
  flex-direction column
  align-items center
  justify-content space-between
  background-color white
  transition width 300ms ease
  width 327px

  @media (min-width 555px)
    width 505px

  @media (min-width 993px)
    max-width 920px
    flex-direction row
    width 920px
    align-items stretch
    margin-right 3rem

  > .left-side
    width 100%
    margin-bottom 1rem
    padding-bottom 1.5rem
    background-image url(./images/bg-pattern-mobile.svg)
    background-position top center
    background-repeat no-repeat
    position relative

    @media (min-width 993px)
      background-image url(./images/bg-pattern-desktop.svg)

      margin 0
      padding 0
      min-height 512px
      background-position top -294px left -574px
      width 480px

    picture
      display flex
      justify-content center
      @media (min-width 993px)
          overflow hidden

      img
        margin-top -6.7rem
        margin-left -28px

        @media (min-width 993px)
          margin-top 4.4rem
          margin-left -10rem

    >img
        display none
        @media (min-width 993px)
          display block
          position absolute
          top 208px
          left -91px

  > .right-side
    width 100%

    @media (min-width 993px)
      max-width 350px
      padding-right 6rem
      padding-top .3rem
      padding-bottom 2rem
      justify-content center
      display flex
      flex-direction column

    h1
      color $very-dark-desaturated-blue
      font-weight 700
      font-size 32px
      margin-top 1rem
      margin-bottom 1.5rem
      text-align center
      @media (min-width 993px)
        text-align left

.accordion
  padding: 0 1.5rem 2rem;
  @media (min-width 993px)
    padding 0
    min-width 350px

  details
    transition height 300ms ease
    overflow hidden
    height 1rem
    border-bottom 1px solid $light-grayish-blue
    padding-bottom 1rem
    padding-top 1rem

    &[open]
      height 4rem

      @media (min-width 993px)
        height 3.8rem

      &:nth-of-type(1)
        height 5rem
      &:nth-of-type(3)
        height 5rem
      &:nth-of-type(5)
        height 4.8rem

      @media (min-width 993px)
        height 3.8rem
        &:nth-of-type(1), &:nth-of-type(2), &:nth-of-type(5)
          height 3.8rem
        &:nth-of-type(3)
          height 4.8rem

      summary
        h2
          font-weight 700
          color $very-dark-desaturated-blue
        &:after
          transform rotate(180deg)

  summary
    list-style: none;
    display flex
    justify-content space-between
    cursor pointer

    h2
      color $very-dark-grayish-blue
      font-size 14px
      font-weight 400
      transition color 200ms

    &:hover
      h2
        color $soft-red

    &:after
      content url(./images/icon-arrow-down.svg)
      float right

  p
    color $dark-grayish-blue
    margin-top 1rem
    padding-right 1rem
