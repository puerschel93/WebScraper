.b2__cnt
	display flex
	align-items center
	justify-content space-between
	
.b2__text
	max-width 630px
	width: 100%
	margin auto
	text-align center
	position relative
	z-index: 2
	p
		margin 0
		font-size: 15px
		line-height: 1.3
	.general__title
		margin-bottom 35px
	&.b2__text__historia
		// max-width 600px
		h2
			padding-bottom 60px
			position relative
			&:before
				content ''
				width: 3px
				height 48px
				background-color c-1
				display block
				position absolute
				left 0px
				right 0px
				margin auto
				bottom 0px
		p
			max-width 588px
			width: 100%
			margin auto
