.b2__figure
.b2__figure2
	margin 0
	width: 469px
	position relative
	img
		width: 100%
		height auto
		display block
		opacity: 0.9
	&:before
		content ''
		width: 100%
		height 100%
		background-image url('../img/masc-2-OK.png')
		position absolute
		left 0px
		top 0px
		background-size auto 100% 
		z-index: 2
.b2__figure2
	margin-top 120px
	width 28%
	&:before
		background-position center left
.b2__figure
	width 28%
	&:before
		background-position center right
.b2__btn
	display flex
	justify-content center
	padding-top 32px
	.general__btn
		width: 204px

.b2__cnt__icons
	width: 100%
	display flex
	justify-content center
	padding-top 42px
	li
		margin 0 7px
		figure
			position relative
		img
			display block
			&:nth-child(2)
				position absolute
				left 0px
				top 0px
				opacity: 0
		figcaption
			font-size: 15px
			line-height: 1.2
			display block
			padding-top 15px
			max-width 124px
			width: 100%
			margin auto
		@media screen and (min-width 1025px)
			img
				transition 300ms all
			&:hover
				img
					&:nth-child(1)
						opacity: 0
					&:nth-child(2)
						opacity: 1
						
@media screen and (max-width 1280px)
	.b3__hoja2
		width: 140px
	.b3__figure
		width: 480px
		img
			max-width 100%
			height auto
			display block
@media screen and (max-width 768px)
	.b2__cnt__icons
		flex-flow row wrap
		li
			margin-bottom 20px
	.b2__figure, .b2__figure2
		display none
	.b2
		padding 60px 0
	.b2.b2__tradicional .b2__text
		margin auto
@media screen and (max-width 767px)
	.b2.b2__tradicional .b7__center
		flex-direction column
	.b2.b2__tradicional .b7__center
		padding-bottom 0
	.b2__cnt
		width: 86%
		margin auto
@media screen and (max-width:468px)
	.b2__cnt
		flex-direction: column-reverse
	.b2__figure2
		// display block
		max-width 100%
		img
			width 40%
	.b2.b2__tradicional .b2__text
		padding-top: 20px



















