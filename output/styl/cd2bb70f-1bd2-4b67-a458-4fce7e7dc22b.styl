body
    background: repeating-radial-gradient(
        circle,
        rgba(224, 224, 224, 0.829),
        rgba(224, 224, 224, 0.829) 10px,
        #dbdbdb 10px,
        #dbdbdb 20px
    );

a, p
    font-family: 'Ubuntu', sans-serif;

h2
    font-family: 'Libre Barcode 128 Text', cursive;
    font-style: normal;
    font-weight: 400;
    font-size: 100px;
    margin-top: 60px;

em
    background-color: rgb(152, 153, 158);
    padding-top: 11px;
    border-radius: 3px;
    font-family: monospace;
    border-bottom: 1px solid gray;
    color: white;
    display: inline-block;

#main
    margin-top: 60px;

.black
    height: 70px;

#github-icon
    height: 55px;
    margin: 7px auto;

#canvas
    display: none;
    margin-top: 3px;
    float: right;

#photo
    margin-top: 10px;
    margin-bottom: 3px;

#video
    margin-top: 10px;

.btn
    font-family: 'Ubuntu', sans-serif;
    margin: 10px;
    padding: 10px 50px 40px 50px;

.brand-logo
    font-family: 'Calibri';
    margin-left: 10px;
    color: white;

.card-title
    font-size: 40px !important;

#instructions
    height: 100%;

photobooth-scale(h, w, l, r)
    height h
    width w
    left l
    right r

#photobooth
    height: 270px;
    @media (max-width: 320px)
        photobooth-scale(440px, null, 8px, null);
    @media (min-width: 321px) and (max-width: 344px)
        photobooth-scale(517px, 321px, -9px, 0);
    @media (min-width: 345px) and (max-width: 360px)
        photobooth-scale(517px, 321px, null, 7px);
    @media (min-width: 361px) and (max-width: 366px)
