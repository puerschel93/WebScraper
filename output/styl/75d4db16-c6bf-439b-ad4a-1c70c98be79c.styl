                //       background-color $asset-bg-main
                //       color $asset-font-none
                //     &:active
                //       background-color $asset-bg-main-active
                //       color $asset-font-main
              button
                min-width 56px
                height 36px
                font-size 14px
                line-height 36px
                margin-right 18px
                background-color $asset-bg-none
                color $asset-font-normal
                border 1px solid $asset-border-minor
                &:hover
                  color $asset-font-main
                  border 1px solid $asset-border-main
                &.disable
                  cursor not-allowed
                  color $asset-font-none
                  background-color $asset-bg-disable
                  border none
