// Inlined in the <head> for faster page renders
// Try to keep the compiled CSS below 10kb for maximum performance

@import 'variables/variables'
@import 'critical/reset'
@import 'critical/fonts'
@import 'critical/typography'
@import 'critical/grid'
@import 'critical/buttons'

body
  background-color darkGrey
  color white
  padding-top 11.2rem

.nav
  background-color darkGrey
  width 100%
  position fixed
  top 0
  z-index 9
  user-select none

  .container
    display flex
    background-color darkGrey

  &__dropdown
    display flex
    justify-content space-between
    align-items stretch
    flex-grow 3

  &__dropdown--toggle
    display none

  &__logo
    flex-grow 2

    img
      height 5rem
      width 11.5rem
      padding 1rem 0

  &__menu
    display flex
    align-items stretch
    
    li
      // Links should resize to the height of the
      // nav when stretched by the main logo image
      a
        helveticaCondensed()
        font-size 1.8rem
        color white
        padding 0 2.25rem
        display inline-flex
        height 100%
        align-items center

        &.active
          background-color midGrey

        &:hover
          background-color p110Blue

  &__social-media-icons
    display flex
    align-items center
    width 10rem
    justify-content space-between

    & a
      transition opacity 0.25s
      
      &:hover
        opacity 0.75

      img
        height 2rem      

  &__search
    display flex
    flex-direction row
    align-items center
    margin 0 -1rem

    &--box
      background-color midGrey
      border-radius 50px  

      &--input
        background none 
        border none
        outline none
        display block
        padding 1rem 1.75rem
        margin 0
        color white
        font-size 1.4rem
        width 100%

        &::placeholder
          color softGrey

        &:focus
          outline-width 0

  &__secondary
    background-color midLightGrey

    .container
      display flex
      justify-content space-between
      background-color midLightGrey
      white-space nowrap

    &--menu
      display flex
      align-items stretch
      font-size 1.4rem

      li

        a
          color white
          text-decoration none 
          padding 0 1.5rem
          display inline-flex
          height 100%
          align-items center

          &.active
            background-color midGrey

          &:hover
            background-color p110Yellow

    &--items
      display flex

      &--item 
        padding 1rem 2rem
        display flex
        align-items center
        

        img
          width 30px
          height 22px

        p
          color white
          margin 0 0 0 1rem
          helveticaCondensed()

        &--youtube
          background-color youtubeRed

          &--subscriber-count
            color youtubeRedText
            helveticaCondensed()
            margin-left .5rem

          &:hover
            background-color youtubeRedHover

        &--control-panel
          background-color midGrey

          &:hover
            background-color p110YellowDark

.flash-messages
  display block

  .flash
    display block
    color white
    background-color red
    min-height 3rem
    position relative

    &--success
      background-color green

    .container
      text-align center

    &__text
      margin .25rem 0
      display inline-block
      padding 0 2rem

    &__remove
      padding 0 .75rem .5rem .75rem
      margin 0
      position absolute
      font-size 2rem
      background-color inherit    
      height 3rem
      z-index 2
      right 0

      &:hover
        cursor pointer
        background-color rgba(255,255,255,0.2)

.p110-album-banner
  margin containerPadding 0
  padding-top 8.05%
  position relative
  background-color black
  
  img
    position absolute
    top 0

  &--mobile
    display none

.promoted
  display flex
  justify-content space-between
  align-items flex-start
  flex-wrap wrap
  margin-bottom 3rem
  
  &__left-column
    width calc(66.666% - 1rem)

    &--video-description
      padding 2rem
      background-color black
      border-bottom 3px solid p110Yellow
      display block

      .video-description__title
        font-size 3.2rem

  &__right-column
    width calc(33.333% - 1rem)
    display flex
    align-items flex-start
    flex-wrap wrap

  &__hottest-videos
    background-color black
    padding 1.6rem 2rem 1rem 2rem
    margin-bottom 2rem
    width 100%
    box-sizing border-box

    h1
      font-size 3.2rem
      line-height 1em
      margin 0

    p
      font-size 1.6rem
      margin 0
      font-family helveticaNeueMedium
      color softGrey

    &--list
      margin-top 1rem

      &--item
        display flex
        align-items center
        justify-content space-between
        padding 1.1rem 1.6rem 1.3rem 1.6rem
        margin 0 -2rem

        &:hover
          background-color p110Blue

        .video-description
          line-height .75em
          margin-left 1.5rem
          padding-right 1rem
          flex-grow 1

          &__type
            font-size 1.2rem
            color softGrey
            
          &__title
            line-height 1.25em
            font-size 1.8rem

        .video-viewcount
          line-height 1em
          text-align right
          
          &__views
            text-transform uppercase
            font-size 1.2rem
            color softGrey

  &__store-banner
    background-color #2c333d
    position relative
    padding-top 41.79%
    width 100%

    img
      position absolute
      top 0
      left 0
        
.play-icon
  width 2.8rem
  height 2.8rem

.youtube-embed
  width 100%
  display block
  padding-top 56.25%
  position relative
  background-color black

  iframe, img
    position absolute
    width 100%
    height 100%
    top 0

    &.youtube-embed__logo
      width 6rem
      height auto
      top 50%
      left 50%
      transform translateX(-50%) translateY(-50%)

      &--rollover
        opacity 0
        transition opacity 0.25s

  &:hover .youtube-embed__logo--rollover
    opacity 1

  &__featured
    position absolute
    margin 0
    left 0
    top 4rem
    background-color p110Yellow
    helveticaCondensed()
    font-size 3.2rem
    color white
    padding 1rem 2rem

.video-description
  
  &__type
    line-height 1.2em
    font-size 1.4rem
    text-transform uppercase
    color p110Yellow

  &__title
    helveticaCondensed()
    font-size 2.4rem

  &__published
    font-size 1.4rem
    color #777

form
  display flex
  flex-direction column
  max-width 350px
  margin-bottom 2rem

  &.disabled
    display none

  label
    margin-bottom .5rem

  input, textarea, select
    background #111 
    outline 2px solid darkGrey
    color #ccc
    font-size 1.4rem
    border none 
    margin-bottom 1.5rem
    padding 1rem
    box-sizing border-box

    &[disabled]
      background-color black

    &:focus
      outline 1px solid p110Yellow

    &.error
      outline 2px solid red

  .checkbox
    display flex
    width 100%
    margin-top 1.5rem
    align-items center

    input[type="checkbox"]
      width 15px
      margin 0 .5rem 0 0

  button
    align-self flex-start

@media(max-width: breakpointLarge)
  @import 'critical/_large'
@media(max-width: breakpointMedium)
  @import 'critical/_medium'
@media(max-width: breakpointSmall)
  @import 'critical/_small'