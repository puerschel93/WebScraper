  //市场
  .home-market
    width 12rem
    padding-top .75rem
    margin 0 auto
    background $home-bg-main
    .home-market-con
      padding .5rem .6rem 1.17rem .54rem
      box-shadow 0 1px 10px 0 rgba(0, 0, 0, 0.20)
      border-radius 6px
      background $home-bg-market
    .market-nav
      height .36rem
      line-height .36rem
      margin-bottom .48rem
      ul
        float left
        li
          position relative
          float left
          padding 0 .15rem
          font-size .16rem
          cursor pointer
          span
            display inline-block
            padding .04rem .28rem
            color $home-font-market
            &.home-market-item-active
              //color $colFFFF
              //background $colB789
              //border-radius .2rem
              //box-shadow: 0 .07rem .3rem rgba(65, 139, 255, .4)
              //margin 0 .14rem
              display inline-block
              width 100%
              height 100%
              background $market-active no-repeat
              background-size 100% 100%
              color $home-font-active
          &:first-child
            padding-left 0
          &:last-child
            padding-right 0
            &:after
              position absolute
              top 0
              right 0
              content ''
              background none
          &:after
            position absolute
            top 50%
            transform translateY(-50%)
            right -.05rem
            content '/'
            color $home-line-main
            opacity .1
      .search_wrap
