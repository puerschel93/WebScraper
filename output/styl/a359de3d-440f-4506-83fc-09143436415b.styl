        //background-image linear-gradient(-123deg, #5C6265 0%, #2F3335 92%) !important
        img
          position relative
          top -.05rem
          left -.1rem
          float right
          width .42rem
          height .42rem
          //vertical-align top
          cursor pointer

    table
      width 100%
      .nothing-market-pair
        color $home-font-normal
        text-align center
        border-bottom none
        td
          padding .3rem 0 0
          font-size .2rem
      tr
        height .45rem
        line-height .45rem
      thead
        tr
          color $home-title-table
        .sort-img-li
          cursor pointer
          img
            width .16rem
            height .16rem
            position relative
            top .03rem
            left .06rem
        th
          text-align right
          font-weight 100
          &.left-th
            text-align left
          &:first-child
            padding-left .2rem
      tbody
        tr
          &.zone-name
            td
              //padding-left .34rem
              letter-spacing 0.08px
              color $home-font-marketTitle
              p
                padding-left .34rem
                margin-bottom .19rem
                font-size .2rem
                font-weight 300
                border-bottom 1px solid $home-line-zone-titleBottom
                &:before
                  position relative
                  top .02rem
                  left -.14rem
                  display inline-block
                  content ""
                  width .04rem
                  height .16rem
                  background $home-line-zone-title
          &.new-zone-name
