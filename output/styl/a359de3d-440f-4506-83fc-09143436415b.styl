              padding-top .36rem
          &.table-data
            border-bottom 1px solid $home-line-market-light // $home-line-market
            td
              text-align right
              padding-right .2rem
              &.left-td
                text-align left
                padding-right 0
              &:first-child
                padding-left .2rem
              &:last-child
                padding-right .2rem
            &:hover
              background $home-bg-marketActive
              box-shadow 0 1px 10px 0 rgba(0, 0, 0, 0.30)
        td
          font-weight 100
          color $home-font-table
          span
            font-weight 100
            color $home-font-table
          .second-span
            color $home-font-marketPrice
            font-size .12rem
          a
            display inline-block
            width 100%
            font-weight 100
            color $home-font-table
          .market-up
            color $home-font-up
          .market-down
            color $home-font-down
        img
          position relative
          top .03rem
          width .16rem
          height .16rem
          cursor pointer

