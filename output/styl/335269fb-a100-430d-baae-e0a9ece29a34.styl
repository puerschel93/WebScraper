@import "mixins.styl"
@import "variables.styl"
@import "fonts.styl"
@import "reset.styl"
@import "default_skin.styl"
global-reset()
html
  font-size 20px
  font-weight 100
  height 100%
  body.home
    height 100%
    .wrapper
      height 100%
      padding-top 70px
      background-image url('../images/bg.jpg')
      background-repeat no-repeat
      background-size cover
      color #CCC
      background-position 50% 50%
      h1
        margin 0 auto 75px auto
        background-image url('../images/logo-home.png')
        width 235px
        height 145px
        text-indent -9999em
      h2
        margin 0 auto
        width 540px
        font-family 'dinbold', sans-serif
        font-size 80px
        text-align  center
        letter-spacing 10px
        font-size 60px
        line-height 65px
      ul
        width 160px
        margin 0 auto
        li
          position relative
          font-family 'dinbold', sans-serif
          text-align left
          text-transform uppercase
          color #FFF
          width 160px
          margin-right 20px
          font-size 12px
          transition all .5s
          &:hover
            width 200px
            transition all .5s
          &:nth-child(1)
            top -375px
            left -260px
          &:nth-child(2)
            top -155px
            left -410px
          &:nth-child(3)
            top -380px
            left 300px
          &:nth-child(4)
            top -210px
            left 410px
          &:nth-child(5)
            top -40px
            left -0px
          a
            border-top 3px solid #f7a11e
            padding-top 15px
            display block
            font-size 14px
            letter-spacing 1px
            &:hover
              opacity 1
          
a
  text-decoration none
  color white
  opacity 1
  transition all .5s
  &:hover
    opacity .5
    transition all .5s
h1, h2, h3, h4, header
  color #FFF
  font-family 'interstateregular', sans-serif
*
  box-sizing border-box

/* NAV */
nav.main
  text-align center
  width 100%
  background #0f2131
  position fixed
  z-index 10
  top 0
  height 60px
  ul
    clearfix()
    padding-top 20px
    font-family 'dinbold', sans-serif
    width 1024px
    margin auto
    li
      text-align left
      border-top 3px solid #f7a11e
      text-transform uppercase
      color #FFF
      display inline-block
      width 160px
      margin-right 20px
      font-size 12px
      a
        padding-top 15px
        display inline-block
        width 100%
        font-size 14px
        letter-spacing 1px
      &:first-child
        border-top 0
        background url('../images/logo.png') no-repeat center center
        width 50px
        text-indent -999em
        height 40px
        margin-right 30px
        position relative
        top -12px
        a
          display block
          width 50px
          height 40px
          top -15px
          position relative
body.societe
  background url('../images/bg/bg-societe.jpg') top center
  background-size cover
  nav ul li:nth-child(2) a
    color #f49120
body.certifications
  background url('../images/bg/bg-certifications.jpg') top center
  background-size cover
  nav ul li:nth-child(3) a
    color #f49120
body.contact
  nav ul li:nth-child(4) a
    color #f49120
body.maintenance
  background url('../images/bg/bg-maintenance.jpg') top center
  background-size cover
  nav ul li:nth-child(5) a
    color #f49120
body.travaux
  background url('../images/bg/bg-travaux.jpg') top center
  background-size cover
  nav ul li:nth-child(6) a
    color #f49120
.others
  h1, h2
    display none
  .wrapper
    width 100%
    position relative
    top 60px
    min-height 600px
    background #FFF
    &.contact 
      top 0px
      .container
        margin 0px auto 200px auto
        padding 0 0 50px 0
    .container
      .easytabs-tab-content aside
        width 24%
      width 980px
      margin 200px auto 200px auto
      color #000
      padding 20px 0 50px 0
      clearfix()
      aside
        background url('../images/picto-arrow.png') no-repeat top left
        background-size 180px
        margin-top 50px
        width 30%
        float left
        text-align center
        padding 150px 80px 0 80px
        min-height 260px
        h4, h5
          color #1c1538
          font-family: 'dinbold', sans-serif;
        h4
          font-size 13px
        h5
          font-size 11px
      &.right
        background url('../images/picto-arrow.png') no-repeat 0px 70px
        padding-left  235px
        background-size 180px
        aside
          background none
          float right
          padding 150px 0px 0 60px
          white-space nowrap
      .easytabs-tab-content .content 
        width 76% 
        & + aside
          background url('../images/picto-arrow-right.png') no-repeat top right
          background-size 180px
       ul.tabs li
          display inline
          &.active
            a
              color #f49120 
      .content
        width 70%
        float left
        ul
          li
            font-family 'interstateregular', sans-serif
            letter-spacing 1px
            list-style-type square
            list-style-position inside
            color #1d173a
            font-size 16px
            font-weight 700
            line-height 25px
            &.sc-selected
              top 10px
          + p
            margin-top 20px
          h4
            color:#000
          h5
            color:#000
            font-size 12px
            line-height 12px
            margin-bottom 10px
          a
            color #1d173a
            img
              margin 0 auto
        h2
          font-family 'dinbold', sans-serif
          letter-spacing 1px
          display block
          height 75px
          padding-left 80px
          background url('../images/bullet.png') no-repeat
          color #000
          font-size 16px
          line-height 75px
          text-transform uppercase
          color #1d173a
          margin-bottom 50px
        h3
          font-family 'interstateregular', sans-serif;
          font-size 17px
          letter-spacing 2px
          color #0a1538
          margin-bottom 10px
          font-weight 700
        p
          margin-top 50px
          font-family 'interstateregular', sans-serif
          font-size 14px
          letter-spacing 1px
          color #0a1538      
          line-height 35px
          text-align justify
          color #0a1538
        + p
          margin-top 20px
      .cordinate
        padding 50px 10px 50px 0px
        text-transform uppercase
        float right
        width 50%
        height 180px
        h3
          color #0a1538
          margin-bottom 10px
          font-weight 700
          font-family 'dinbold', sans-serif
          letter-spacing 5px
          font-size 24px
          margin-bottom 30px
        p
          font-family 'dinbold', sans-serif
          
      .mailto
        float right
        display table
        width 50%
        li
          font-family 'dinbold', sans-serif
          display table-cell
          vertical-align middle
          color #FFF
          text-transform uppercase
          text-align center
          height 180px
          width 33.3%
          position relative
          background url('../images/bg-mail.gif') repeat-x
          &:nth-child(2)
            background url('../images/bg-mail-2.gif') repeat-x
          .mask
            opacity 0
            transition all 1s
            background #272627
            padding 85px 0
            display block
            height 180px
            font-size 13px
            position absolute
            top -1px
            width 100%
            text-align center
            &:hover
              opacity 1
    .tabs
      width 1024px
      margin auto
      clearfix()
      li
        font-family 'dinbold', sans-serif
        letter-spacing 1px
        float left
        height 75px
        padding-left 85px
        background url('../images/bullet.png') no-repeat
        color #000
        font-size 16px
        line-height 75px
        text-transform uppercase
        margin-bottom 50px
        margin-right 20px
        a
          color #1d173a
    .logos
      margin-top 20px
      a
        margin-left 40px
        &:first-child
          margin-left 0
    .container 
      .easytabs-tab-content
        width 100%
    #slides
      display none
      overflow visible
      .slides
        color #000
      .slidesjs-navigation
        color #000
  #map
    width 100%
    height 400px
