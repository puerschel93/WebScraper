[my-skin=default]

  gridColor = rgba(244,244,244,1)
  
  .my-grid
    background gridColor
  
  .my-grid caption
    background gridColor

  border-table()
    border-table-no-right()
    border-right  1px solid #a9aeb9
    
  border-table-no-right()
    border-bottom 1px solid #a9aeb9
    border-top    1px solid #a9aeb9
    border-left   1px solid #a9aeb9
    border-right  0px solid #a9aeb9
    margin 0px
    border-spacing 0px
    border-collapse collapse    
  
  .my-grid
    font-family helvetica
    border-table()
  
  .my-grid
    border-table-no-right()
 
  nowrap()
    white-space pre
    max-width 300px

  .my-grid td.my-detail-grid
    overflow-x visible
    border-right none 
    z-index -1000
    
  .my-grid td
    color #555866
    border-table()
    nowrap()
    padding 4px
  
  .my-grid tr:nth-child(2n) 
    background-color #fbfbfb
  
  .my-grid tr td x
    background-color #f5f5f5
    border-bottom   2px solid #666
    border-top      2px solid #3F517F
  
  .my-grid th
    border-table()
    color #555866
    
  .my-grid tbody th
    nowrap()
    background-color #dbd7d3
  
  .my-grid caption
    font-family Helvetica
    font-weight bold
    font-size 75%
    letter-spacing 1px
    border-table()
    background #456b71
    padding 6px
    color #ececec
  
  .my-grid tfoot
    background-color #d4cdc8
    color #35353d
    font-size 90%
    padding 5px
  
  .my-grid thead th
    font-family  Helvetica
    font-size 70%
    background-color #d4cdc8
    white-space nowrap
    color #444444
    z-index 1
   
  .th-name
    padding 3px
    font-size 70%
    overflow hidden
      
  .my-grid thead th.th-detail
    font-size 60%
    white-space wrap
  
  .grid-th grid-th-actions
     background-color #262b38
    
  .table-button
    margin 0px
    border 0px
    padding 0px
    background-color transparent
    z-index -1
       
  .table-button img
    height 18px
    padding 1px
    -webkit-transform scale(1.0)
    transform scale(1.0)
    -webkit-transition .3s ease-in-out
    transition .3s ease-in-out
  
  .table-button img:hover
    -webkit-transform scale(1.2)
    transform scale(1.2)
    cursor pointer
  
  .table-button img:active
    -webkit-transform scale(1.2)
    transform scale(1.2)
    cursor pointer
    
  .autoFilter
    background-color #d4cdc8
    width 30px
    
    
  [has-filter='1'] 
    [when-filter=no] 
      display none
    [when-filter=yes] 
      display inherit
  
  [has-filter='0']
    [when-filter=yes] 
      display none
    [when-filter=no] 
      display inherit
  
  .filter-span
    display inline-block
    color #505365
    background-color #ededed
    padding 2px
    border-top 1px solid #525a6c
    border-left 1px solid #525a6c
    border-bottom 1px solid #525a6c
    border-right 1px solid #525a6c
    min-height 20px
    min-width 20px
    outline none !important
  
  .filter-span:focus
    display inline-block
    background-color #FFF
    padding 2px
    border-top 1px solid #25a195
    border-left 1px solid #25a195
    border-bottom 1px solid #25a195
    border-right 1px solid #25a195
    min-height 20px
    min-width 20px
    outline none !important
    
  .filter-line
    th
      vertical-align middle
      
  .filter-line
    td
      padding 2px
      vertical-align bottom
  
  .grid-dummy-cell-ini
    height: 1px;
    width: 1px;
    transition: height 0.6s ease;
  
  .grid-dummy-cell-del
    transition: height 0.6s ease;
  
  @keyframes animateheight {
    from {transform: scaleY(0.1)}
    to {transform: scaleY(1)}
  }
  
  .empty-rigth-column{
    background-color inherit !important
    border inherit !important
    padding 0 !important
  }
  
  .my-grid td.autoFilter{
    nowrap()
    white-space nowrap
    background-size 24px
    background-position center left 
    padding-left 26px !important
  }
  
  td.autoFilter button{
    display inline-block
  }
  
  .number_miles + .number_miles{
    margin-left 2px
  }
  
  .number_decimals
    font-size 90%
  
  .date_year
    font-size 90%
  
  .img-lupa
    height 25px
    -webkit-transform scale(1.0)
    transform scale(1.0)
    -webkit-transition .2s ease-in-out
    transition .2s ease-in-out
    
  .img-lupa:hover
    height 35px
    cursor pointer
    -webkit-transform scale(1.1)
    transform scale(1.1)
    -webkit-transition .2s ease-in-out
    transition .3s ease-in-out
    
    
  .foot-info
    color #444444
    font-weight 600
    padding 7px
    background #17ccba
    border-right  1px solid #535767
    border-bottom 1px solid #535767
    border-left  1px solid #535767
    border-top 1px solid #535767
    border-radius 15px
  
  .foot-info:hover
    background #f4e4bd
    cursor pointer
    
  .foot-info:active
    color #FFF
    background-color #082158
    border-right  2px solid #2f5097
    border-bottom 2px solid #2f5097
    border-left  2px solid #122348
    border-top 2px solid #122348
    
  #button-filter
    color #444444
    font-weight 600
    padding 5px
    background #17ccba
    border-right  1px solid #444444
    border-bottom 1px solid #444444
    border-left  1px solid #444444
    border-top 1px solid #444444
    border-radius 15px
    
  #button-filter:hover
    background #f4e4bd
    cursor pointer
    
  #button-filter:active
    color #FFF
    background-color #5b588c
    background -webkit-linear-gradient(#56558c, #50849c)
    background -o-linear-gradient(#56558c, #50849c)
    background -moz-linear-gradient(#56558c, #50849c)
    background linear-gradient(#56558c, #50849c)
    border-right  0px solid #5b588c
    border-bottom 0px solid #5b588c
    border-left  0px solid #5b588c
    border-top 0px solid #5b588c
    
  #main-top-bar
    background-color #384e52
    vertical-align center
    margin 0px
    padding 2px
  
  #main-top-bar1, .sub-menu-bar
    background-color #839391
    
  .menu-item
    font-family Helvetica
    color #f4f4f4
    font-size 75%
    font-weight 700
    background-color transparent
    border-right  1px solid #6d7a78
    border-bottom 0px solid #7799a0
    border-left  0px solid #7799a0
    border-top 0px solid #7799a0
    letter-spacing 1px
    padding 5px
  
  .menu-item:hover
    color #a9cac7
  
  .menu-item[menu-selected="yes"]
    background-color #9daba9
   
  a.menu-item
    margin-top 5px
    
  #right-menu
   color #a9cac7
   font-family Helvetica
   font-weight 700
   font-size 75%
   
  #right-menu:hover
   cursor pointer
   color #FFF
  
  #active-user
    color #6bccc2
  
  #not-logged
    color #ff5a27
  
  #tables
    background-color #171d3b
    background -webkit-linear-gradient(#171d3b, #d4cdc8)
    background -o-linear-gradient(#171d3b, #d4cdc8)
    background -moz-linear-gradient(#171d3b, #d4cdc8)
    background linear-gradient(#171d3b, #d4cdc8)
    font-family Helvetica
    font-weight 600
    color #FFF
    border-right  1px solid #767a8e
    border-bottom 0px solid #767a8e
    border-left  0px solid #767a8e
    border-top 0px solid #767a8e
    line-height 40px
    border-collapse collapse
    cursor pointer
    letter-spacing 1px
    font-size 70%
    
  #tables:hover
    background #ddb78c
    background -webkit-linear-gradient(#ddb78c, #c89862)
    background -o-linear-gradient(#ddb78c, #c89862)
    background -moz-linear-gradient(#ddb78c, #c89862)
    background linear-gradient(#ddb78c, #c89862)
    font-family Helvetica
    font-weight 600
    color #FFF
    border-right  1px solid #767a8e
    border-bottom 0px solid #767a8e
    border-left  0px solid #767a8e
    border-top 0px solid #767a8e
    line-height 40px
    border-collapse collapse
    cursor pointer
    letter-spacing 1px
    font-size 70%
    
  [inherited-pk-column=yes]
    display none
    background-color #aea9a4
 
  [show-inherited-keys=yes] [inherited-pk-column=yes]
    display table-cell
   
  .sort-img
    display block
    width 16px
  
  [my-mandatory]:empty
    background url(../img/mandatory.png) top right no-repeat
    background-size 12px 12px
    -moz-box-shadow    inset 0 0 2px #335082
    -webkit-box-shadow inset 0 0 2px #335082
    box-shadow         inset 0 0 2px #335082

  [my-mandatory="pk"]:empty
    background url(../img/mandatory-pk.png) top right no-repeat
    background-size 12px 12px
    -moz-box-shadow    inset 0 0 2px #335082
    -webkit-box-shadow inset 0 0 2px #335082
    box-shadow         inset 0 0 2px #335082