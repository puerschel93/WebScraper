.usefullCard{
    margin: 110px 0 37px 0;
}
/*-------------------------------------*/
.usefullCurrentPost{
    background: #FFFFFF;
}
.usefullCurrentPost__imgBlock{
    height: 550px;
    margin: 0 0 45px 0;
}
.usefullCurrentPost__imgBlock img{
    width: 100%;
    height: 100%; 
}

.usefullCurrentPost__contentBlock__name,.usefullCurrentPost__contentBlock__cost {
    font-size:25px;
    font-weight: 600;
    color: #000000;
    padding: 0px 0 25px 15px;
    margin:0;
}



.usefullCurrentPost__contentBlock__desc{
    font-size: 15px;
    color: #000000;
    padding: 0px 15px 43px 15px;
}
.usefullCurrentPost__contentBlock__desc__desc{
    margin: 56px 0 90px 0;
}

.usefullCurrentPost__contentBlock__desc__address,.usefullCurrentPost__contentBlock__desc__phone,
.usefullCurrentPost__contentBlock__desc__mail,.usefullCurrentPost__contentBlock__desc__site
{
    display:flex;
}


.usefullCurrentPost__contentBlock__desc__address h2,.usefullCurrentPost__contentBlock__desc__phone h2,
.usefullCurrentPost__contentBlock__desc__mail h2,.usefullCurrentPost__contentBlock__desc__site h2
{
    font-size:15px;
    font-weight: 600;
    color:black;
    width: 124px;
}
.usefullCurrentPost__contentBlock__desc__address p,.usefullCurrentPost__contentBlock__desc__phone p,
.usefullCurrentPost__contentBlock__desc__mail p,.usefullCurrentPost__contentBlock__desc__site p,
.usefullCurrentPost__contentBlock__desc__desc p{
    font-size:15px;
    font-weight: 400;
    color: black;
}


.usefullCurrentPost__contentBlock__desc__desc h2,.usefullCurrentPost__contentBlock__desc__info__name{
    font-size:15px;
    font-weight: 600;
    color:black;
}

.usefullCurrentPost__contentBlock__desc__info__name{
    padding: 0 0 55px 0;
}
.usefullCurrentPost__contentBlock__desc__info__avtozap{
    display:flex;
}
.usefullCurrentPost__contentBlock__desc__info__avtozap__content{
    margin-bottom: 57px;
    display:flex;
}
.usefullCurrentPost__contentBlock__desc__info__avtozap__name{
    font-size:15px;
    font-weight: 600;
    color:black;
    width: 170px;
}

.usefullCurrentPost__contentBlock__desc__info__avtozap__content__left{
    width: 288px;
}
.usefullCurrentPost__contentBlock__desc__info__avtozap__content__left__first,
.usefullCurrentPost__contentBlock__desc__info__avtozap__content__left__second{
    display: flex;
}
.usefullCurrentPost__contentBlock__desc__info__about{
    display:flex;
}
.usefullCurrentPost__contentBlock__desc__info__about__name{
    font-size:15px;
    font-weight: 600;
    color:black;
    width: 170px;
}
.showFullDesc{
    text-decoration: none;
    margin-left: 170px;
    width: 230px;
    height: 100%;
    align-items: center;
}
.showFullDesc:hover{
    text-decoration: none;
}
.showFullDesc h2{
    font-size:15px;
    color: #CECECE;
    border-bottom:2px solid #CECECE;
}    
.showFullDesc img{
    margin: -5px 0 0 2px;
}    





.usefullCurrentPost__contentBlock__ocenka{
    padding: 0px 15px 24px 15px;
}
.usefullCurrentPost__contentBlock__ocenka__name,.usefullCurrentPost__contentBlock__ocenka__count{
    font-size: 15px;
    color: #B9B9B9;
    margin:0;
    padding: 2px 0 5px 0px;
}
.usefullCurrentPost__contentBlock__ocenka__starDiv{
    padding: 0 14px 0 14px;
}
.usefullCurrentPost__contentBlock__ocenka__starDiv__item{
    color:#E7E9EC;
    cursor: pointer;
}
.usefullCurrentPost__contentBlock__ocenka__starDiv__item:hover{
    color: #FEC628;
}
.usefullCurrentPost__contentBlock__repost{
    padding: 0 14px 24px 14px;
}
.usefullCurrentPost__contentBlock__repost__repostButton{
    padding: 0 14px 0 0;
}
.usefullCurrentPost__contentBlock__repost__repostButton img{
    width:22px;
    height: 22px;
    margin: 2px 0 0 0 ;
}
.usefullCurrentPost__contentBlock__repost__repostButton__name{
    color: #000000;
    font-size: 15px;
    font-weight: 600;
    padding: 5px 0 5px 5px;
    text-decoration: none;
}

.usefullCurrentPost__contentBlock__repost__social a img{
    width:25px;
    height: 25px;
    margin: 0 5px 0 0;
}



