@import '../reset'
@import 'url'
//opacity_support------------------------------------------------------------------------------------------
support-for-ie ?= true

opacity(n)
    opacity n
    if support-for-ie
        filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')
//------------------------------------------------------------------------------------------
a
    text-decoration none
    outline none
.disnone
    display none
.hide
    visibility hidden
.ui-tabs-hide
    display none
body
    font-size 12px
    font-family '宋体'
    background-color #1C180F
.container
    min-width 1000px
    background url($bg) center top no-repeat
    .content
        width 1000px
        margin 0 auto
        position relative
        min-height 1000px
        .logo_link
            position absolute
            top 50px
            left 10px
            width 210px
            height 80px
        .nav
            position absolute
            width 600px
            height 25px
            left 427px
            top 12px
            overflow hidden
            a
                display block
                float left
                height 21px
                width 65px
                margin-right 16px
                &.fn_main
                    &:hover
                        background url($nav_tip) -2px 0px no-repeat
                &.fn_news
                    &:hover
                        background url($nav_tip) -83px 0px no-repeat
                &.fn_download
                    &:hover
                        background url($nav_tip) -164px 0px no-repeat
                &.fn_usercenter
                    &:hover
                        background url($nav_tip) -245px 0px no-repeat
                &.fn_gameinfo
                    &:hover
                        background url($nav_tip) -326px 0px no-repeat
                 &.fn_service
                    &:hover
                        background url($nav_tip) -407px 0px no-repeat
                 &.fn_bbs
                    &:hover
                        background url($nav_tip) -488px 0px no-repeat
        .fn_group
            position absolute
            top 296px
            left 9px
            width 203px
            height 300px
            a
                display block
                height 44px
                &.fn_download_btn
                    height 75px
                    margin-bottom 3px
                    &:hover
                        background url($btn) 0 0 no-repeat
                &.fn_reg_btn:hover
                    background url($btn) 0 -78px no-repeat
                &.fn_charge_btn:hover
                    background url($btn) 0 -122px no-repeat
                &.fn_active_btn:hover
                    background url($btn) 0 -210px no-repeat
                &.fn_get_gift_btn:hover
                    background url($btn) 0 -166px no-repeat
        .bread_path
            position absolute
            right 30px
            top 315px
            color #C0A7EB
            a
                color #C0A7EB
                &:hover
                    text-decoration underline 
        .game_lib_detail
            padding 370px 0 0 218px
            top 380px
            left 220px
            width 771px
            h1
                text-align center
                font-size 16px
                font-weight bold
                color #D6BBFF
                padding-bottom 15px
                background url($h1_bg) center bottom no-repeat
            .lib_nav
                padding 15px 0 20px 0
                margin 0 20px 0 20px
                border-bottom dashed 1px #35184E
                a
                    width 113px
                    height 36px
                    line-height 31px
                    text-align center
                    color #D8BAFF
                    font-size 14px
                    font-weight bold
                    background url($lib_nav) 0 0 no-repeat
                    display inline-block
                    margin-right 8px
                    margin-bottom 10px
                    &.current
                        color #FFF
                        background url($lib_nav_hover) 0 0 no-repeat
            .lib_text
                padding 30px 40px 20px 40px
                font-size 14px
                line-height 22px
                background-color #26182F
                min-height 330px
                _height 330px
                color #62DCDF
                img
                    margin 10px 0
                a
                    color #fff
                p
                    text-indent 28px
                strong
                    font-weight bold
                table
                    border solid 1px #6839A1
                    background-color #311E3C
                    width 700px
                    margin 10px auto
                    color #746397
                    font-size 12px
                    display none
                    th
                        background-color #442463
                        text-align center
                        border-bottom solid 1px #6839A1
                        padding 5px 3px
                        font-size 13px
                        font-weight bold
                        color #D7B7FF
                    td
                        text-align center
                        padding 2px 5px
                        &.des
                            width 300px
                            text-align left
                    .even
                        background-color #26182F
                    img
                        width 30px
                        height 30px
        #copyright
            padding-bottom 60px
            position relative
            margin-top 20px
            .copyright_content
                background url($copyright_bg)
                padding 10px 10px 10px 140px
                line-height 20px
                color #645995
            .syyx_logo
                width 117px
                height 49px
                position absolute
                top 10px
                left 15px
        #game_lib_nav
            position absolute
            top 552px
            left 9px  
            border solid 1px #371641
            width 201px
            padding-top 42px
            background #201325 url($lib_nav_title) repeat-x
            li
                position relative
                height 37px
                .title
                    position absolute
                    top 0
                    left 0
                    display block
                    width 131px
                    height 37px
                    background url($lib_nav_item) 0 0 no-repeat
                    color #E3D0FF
                    font-weight bold
                    font-size 14px
                    line-height 37px
                    padding-left 70px
                    &:hover
                        color #fff
                .lib_nav_content
                    position absolute
                    z-index 100
                    display none
                    left 203px
                    top 0
                    border solid #8542E0 1px
                    padding 20px 20px 10px 20px
                    width 320px
                    background-color #3A1E5B
                    a
                        color #C798FF
                        border-right 1px solid #C798FF
                        display: inline-block
                        height 14px
                        line-height 14px
                        margin-bottom 10px
                        padding 0 7px
                        &:hover
                            color #fff
                            text-decoration underline
                .arrow
                    position absolute
                    display none
                    left 195px
                    top 12px
                    width 9px
                    height 13px
                    background url($arrow) 0 0 no-repeat
                    z-index 1000  
