.header 
    width 100%

    .burger
        display none

        @media screen and (max-width: 600px)
            display flex

        .sidebarIconToggle 
            transition: all 0.3s
            box-sizing: border-box
            cursor: pointer
            position: absolute
            z-index: 99
            height: 22px
            width: 22px
            left:20px
            top:35px
            display: block

            .spinner 
                transition: all 0.3s
                box-sizing: border-box
                position: absolute
                height: 3px
                width: 100%
                background-color: #ca6791

            .horizontal 
                transition: all 0.3s
                box-sizing: border-box
                position: relative
                float: left
                margin-top: 3px

            .diagonal.part-1 
                position: relative
                transition: all 0.3s
                box-sizing: border-box
                float: left

            .diagonal.part-2 
                transition: all 0.3s
                box-sizing: border-box
                position: relative
                float: left
                margin-top: 3px


        input[type=checkbox]:checked ~ .sidebarIconToggle > .horizontal 
            transition: all 0.3s
            box-sizing: border-box
            opacity: 0

        input[type=checkbox]:checked ~ .sidebarIconToggle > .diagonal.part-1 
            transition: all 0.3s
            box-sizing: border-box
            transform: rotate(135deg)
            margin-top: 8px

        input[type=checkbox]:checked ~ .sidebarIconToggle > .diagonal.part-2 
            transition: all 0.3s
            box-sizing: border-box
            transform: rotate(-135deg)
            margin-top: -9px

        input[type="checkbox"]:checked ~ #sidebarMenu 
            transform: translatey(0)
            top:75px /*change here related your top menu height*/

        input[type=checkbox] 
            transition: all 0.3s
            box-sizing: border-box
            display: none
            appearance: none
            border none

    #sidebarMenu::-webkit-scrollbar 
        width: 12px

    #sidebarMenu::-webkit-scrollbar-track 
        box-shadow: inset 0 0 6px rgba(0,0,0,0.3) 
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3) 
        border-radius: 10px 

    #sidebarMenu::-webkit-scrollbar-thumb 
        box-shadow: inset 0 0 6px rgba(0,0,0,0.3) 
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3) 
        border-radius: 10px
        background: #0000002e
        height: 50px
    
    #sidebarMenu 
        height: 399px /*change here related your menu height*/
        position: fixed
        overflow: none
        width: 100%
        z-index: 100
        transform: translateY(-399px) /*change here related your menu height*/
        
        .main-content-wrapper a
            width: 100%
            height: 40px
            display: block
            background: #fff
            text-align: center
            padding-top: 15px
            border: 1px solid #eee
            color: #81AA94
            text-decoration: none

            &:hover
                text-decoration underline
                color #569372

    .header-top

        @media screen and (max-width: 600px)
            display none

        .wrapper 
            display flex
            justify-content space-between
            align-items center
            padding-top 17px
            padding-bottom 17px
            
            @media screen and (max-width: 1200px)
                justify-content space-around
            
            .logo
                display flex
                width 116px
                height 56px
                background-image url('./assets/img/logo.svg')
            .location
                display flex
                align-items center
                color #1D1C1C
                text-decoration none
                cursor pointer
                &:hover
                    color #000
                span 
                    display flex
                    background-image url('assets/img/location.svg')
                    width 11px
                    height 14px
                    background-size 11px 14px
                    margin-right 7px
            .phones
                display flex
                flex-direction column 
                a
                    display flex    
                    color #CA6791
                    text-decoration none
                    font-weight 300
                    &:nth-child(1)
                        margin-bottom 9px
                    span
                        display flex
                        background-image url('assets/img/phone.svg')
                        width 15px
                        height 15px
                        background-size 15px
                        margin-right 5px

            .social-links
                display flex
                align-items center
                a
                    display flex

                .instagram
                    background-image url('assets/img/insta.svg')
                    width 26px
                    height 26px
                    background-size 26px
                    
                .telegram
                    background-image url('assets/img/telegram.svg')
                    width 31px
                    height 31px
                    background-size 31px
                    margin-right 27px












