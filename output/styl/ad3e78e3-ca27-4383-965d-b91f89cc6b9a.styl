    //         stroke $chartDBlue
    //     .highcharts-color-2
    //         fill $chartGreen
    //         stroke $chartGreen

.character-wrapper
    .highcharts-series-0
        .highcharts-color-0
            fill: url(#diagonalHatch)
        .highcharts-color-1
            fill: url(#diagonalHatch1)
        .highcharts-color-2
            fill: url(#diagonalHatch2)
    .highcharts-legend-item.highcharts-series-0
        .highcharts-point
            fill: url(#diagonalHatch)
    .highcharts-legend-item.highcharts-series-1
        .highcharts-point
            fill: $black

.services-wrapper
    .slider-area-chart
        &.chart-Low
            .highcharts-color-0
                fill $chartRed
                stroke $chartRed
        &.chart-Medium
            .highcharts-color-0
                fill $chartorange
                stroke $chartorange
        &.chart-High
            .highcharts-color-0
                fill $chartgreen
                stroke $chartgreen