@import 'nib'
@require '~@/css/placeholder'
@require '~@/css/variables'

.b-button
    position relative
    display inline-block
    overflow hidden
    width auto
    min-width 5.5rem
    padding 0 1.375rem
    border-radius 5px
    outline none
    font-family 'SCaption', $textnormal
    font-size (14 / 16)rem
    font-weight 400
    line-height (36 / 16)rem
    height (38 / 16)rem
    -webkit-box-align center
    -webkit-align-items center
    cursor pointer
    user-select none
    justify-content center
    text-align center
    white-space nowrap
    transition border-color 0.2s, background-color 0.2s, color 0.2s ease-out
    border 1px solid var(--geist-foreground-color)
    text-decoration none
    letter-spacing 0.2px
    background-color #536EFC
    color #FFFFFF
    &.-l
        padding 0 1rem
        font-size (16 / 16)rem
        line-height (26 / 16)rem
        height (44 / 16)rem
        font-family 'SF Pro Text'
        text-align center
    &.-n
        padding 0 1rem
        font-size 0.875rem
        line-height (22 / 16)rem
        height (40 / 16)rem
        font-family SF Pro Text
        text-align center
    &.-m
        padding 0 1rem
        font-size (14 / 16)rem
        line-height (22 / 16)rem
        height (36 / 16)rem
        font-family SF Pro Text
        text-align center
    &.-s
        padding 0 1rem
        font-size (11 / 16)rem
        line-height (22 / 16)rem
        height (30 / 16)rem
        font-family SF Pro Text
    &.-mini
        padding 0 1rem
        font-size (14 / 16)rem
        line-height (26 / 16)rem
        height (30 / 16)rem
        & .data-feather
            width 18px
            height 18px
            top 0.3rem
    &.-stext
        font-family 'SText', $textnormal
    &:hover, &.-hover
        color #FFFFFF
        background-color #6B83FF
    &.-white
        color var(--accents-2)
        border-color var(--border-color)
        background-color var(--geist-background)
        &:hover
            color var(--foreground-color)
            background-color var(--accents-4)
        &:active, &:before
            background-color var(--accents-5)
        &:focus
            box-shadow 0 0 0 0.2rem var(--accents-7)
    &.-blue
        color var(--foreground-color)
        border-color var(--geist-success)
        background-color var(--geist-success)
        &:hover
            border-color var(--geist-success-dark)
            background var(--geist-success-dark)
        &:active, &:before
            background-color var(--geist-success-action-color)
        &:focus
            box-shadow 0 0 0 0.2rem var(--geist-success-light)
    &.-red
        color var(--geist-background)
        border 1px solid var(--geist-error)
        background var(--geist-error)
        &:hover
            color var(--geist-background)
            border-color var(--geist-error-dark)
            background-color var(--geist-error-dark)
        &:active, &:before
            background-color var(--geist-error-action-color)
        &:focus
            box-shadow 0 0 0 0.2rem var(--geist-error-light)
    &.-cyan
        color var(--geist-background)
        border 1px solid var(--geist-cyan)
        background var(--geist-cyan)
        &:hover
            color var(--geist-background)
            border-color var(--geist-cyan-dark)
            background-color var(--geist-cyan-dark)
        &:active, &:before
            background-color var(--geist-cyan-action-color)
        &:focus
            box-shadow 0 0 0 0.2rem var(--geist-cyan-light)
    &.-yellow
        color var(--geist-foreground)
        border 1px solid var(--geist-yellow)
        background var(--geist-yellow)
        &:hover
            color var(--geist-foreground)
            border-color var(--geist-yellow-dark)
            background-color var(--geist-yellow-dark)
        &:active, &:before
            background-color var(--geist-yellow-action-color)
        &:focus
            box-shadow 0 0 0 0.2rem var(--geist-yellow-light)
    &.-disabled
        color var(--inactive-foreground)
        background-color var(--inactive-background)
        pointer-events none
        border-color var(--inactive-border-color)
        cursor not-allowed
        & span
            color inherit
    & .data-feather
        position relative
        top 0.4rem
        margin-right 3px
        width 23px
        height 23px
    & span
        display block
        position relative
        padding 0
        margin 0
        letter-spacing -0.1px
    &:active, &.-active
        color #FFFFFF
        background-color #334ED9
    &:focused
        background-color #536EFC
        color #FFFFFF
    &:before
        content ' '
        position absolute
        top 50%
        left 50%
        display block
        width 0
        padding-top 0
        border-radius 100%
        background-color var(--action-color)
        transform translate(-50%, -50%)
        box-sizing border-box
    &:active:before
        width 120%
        padding-top 120%
        transition width 0.2s ease-out, padding-top 0.2s ease-out
