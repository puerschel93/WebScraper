$border-color = rgb(198, 198, 196)
$status-color = rgb(250, 250, 238)
* 
    margin 0
    padding 0
html
    height: 100%
    body
        height: 100%
        position relative

header 
    background-color rgb(221, 221, 221)
    padding: 20px 0px 20px 20px
    border: 1px solid $border-color
    color: rgb(154, 154, 154)
    font-size: 22px
    height: 7%
    box-sizing: border-box
.wrap
    overflow hidden
    box-shadow: 1px 1px 5px 1px grey
    width 90%
    margin: 0 auto
    height: 100%
    .taskList
        float left
        background-color rgb(242, 242, 242)
        width 260px
        height: 100%
        position relative
        border-right: 1px solid $border-color
        font-size: 20px
        .listHeader
            margin-left: 5px
            margin-right: 5px
            padding-top: 20px
            box-sizing: border-box
            height: 10%
            p
                padding-left: 5px
            div
                padding-left: 5px
                margin-bottom: 20px
                &:first-child
                    cursor pointer
                    &:hover
                        transform: scale(1.01)
                        box-shadow: 0 1px 8px 1px black
                        // cursor pointer
        .listContentWrap
            height: 84%
        .listContent
            margin-left: 10px
            margin-right: 10px 
            margin-top: 10px
            .listNameHeader
                position relative
                padding-left: 20px
                padding-top: 3px
                padding-bottom: 3px
                .fa-minus-circle
                    display: none
                    transform: translateY(-50%)
                    cursor: pointer
                    // margin-right: 20px
                    top 50%
                    right 20px
                    position absolute
                    &:hover .fa-minus-circle
                        display block
            .listName
                margin-top: 6px
                font-size: 19px
                position relative
                div
                    .fa-minus-circle
                        display: none
                        transform: translateY(-45%)
                        cursor: pointer
                        // margin-right: 20px
                        top 50%
                        right 10px
                        position absolute
                    &:hover 
                        transform: scale(1.01)
                        box-shadow: 0 1px 8px 1px black
                        cursor pointer
                        .fa-minus-circle
                            display block

            .listTask
                // margin-left: 17px
                padding-left: 37px
                margin-top: 2px
                padding-top: 3px
                padding-bottom: 3px
                font-size: 16px
                position relative

                // span 
                //     // text-align: right
        .newClassify
            position absolute
            box-sizing: border-box
            width 100%
            padding: 10px
            height: 6%
            box-sizing: border-box
            bottom 0
            cursor: pointer
            border-top: 1px solid $border-color
    .taskStatus
        float left
        width 260px
        height: 100%
        border-right: 1px solid $border-color
        position relative
        .statusHeader
            background-color rgb(242, 242, 242)
            padding 10px
            height: 5%
            box-sizing: border-box
            &::after
                content: ""
                display: block
                clear: both
            .active
                padding: 1px 10px
                border: 1px solid $border-color
                background-color #fff
            div
                float: left 
                padding: 1px 10px
                border: 1px solid transparent
                background-color transparent
        .statusContent
            height: 89%
            overflow-y: scroll
            .statusDate
                .statusDateHeader
                    padding: 10px 0px 10px 10px
                    background: $status-color
                .dateTask
                    padding: 10px 0px 10px 20px 
                    margin: 0 5px
                    color: coral
                .active
                    background-color rgb(242, 242, 242)
                .done
                    color: chartreuse
        .newTask
            box-sizing: border-box
            width 100%
            padding: 10px
            bottom 0
            border-top: 1px solid $border-color
            position absolute
            background-color rgb(238, 238, 238)
            height: 6%
    .todoDetail
        float: left
        min-width calc(100% - 522px)
        height: 100%
        .detailHeader
            .detailName
                background-color rgb(242, 242, 242)
                padding: 10px 0px 10px 20px
                overflow hidden
                height 5%
                box-sizing: border-box
                .taskName
                    float left
                .confirm
                    float right
                    margin-right: 20px
                    cursor pointer
                    font-size: 20px
                .write
                    float right
                    margin-right: 20px
                    cursor pointer
                    font-size: 20px
            .detailDate
                background-color $status-color
                padding: 10px 0px 10px 20px
                border-top 1px solid $border-color
                border-bottom 1px solid $border-color
        .detailContent
            padding: 10px 0 10px 20px
.mask
    z-index 1
    background-color rgba(128,128,128,0.95)
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display: none
    .newBox
        position absolute
        top 50%
        left 50%
        transform: translate(-50%, -50%)
        border: 1px solid black
        border-radius: 10px
        padding: 30px
        width 50%
        max-width: 500px
        font-size: 22px
        padding-bottom: 10px
        box-shadow: 0 0 10px 0 black
        background-color #808080
        div:first-child
            margin-bottom: 10px
            input 
                font-size: 22px
        .faSelect
            select 
                font-size: 22px
    .quit
        position absolute
        right 11px
        top 0px
        cursor pointer
        .line1, .line2, .line3
            height 2px
            width 30px
            background-color mediumaquamarine
            margin-top: 10px
            transition: .3s
        &:hover 
            .line1
                transform: translateY(12px) rotate(45deg)
            .line2
                opacity 0%
            .line3
                transform: translateY(-12px) rotate(-45deg)
.addBtn
    margin: 0 auto
    cursor pointer
    width 50px
    text-align: center
    border: 1px solid black
    margin-top: 13px
article 
    overflow: hidden
    height: 93%
.detailCreatTable
    height: 100%
    font-size: 20px
    .detailCreatName
        height: 100%
    .detailContent
        height: 50%
        padding: 30px 0 0 0 !important
        .detailCreatContent
            padding: 20px
            display: block
            margin: 0 auto
            width 80%
    input 
        font-size: 20px
        padding: 5px 0 5px 10px
    textarea 
        font-size: 20px
        height: 80%
    .creatBtn
        text-align: center
        font-size: 0
        div
            font-size: 20px
            display: inline-block
            border: 1px solid $border-color
            border-radius: 5px
            padding: 3px
            cursor pointer
            &:first-child
                margin-right: 6px
.newTask
    cursor: pointer
    font-size: 20px
.dateTask:hover
    transform: scale(1.01)
    box-shadow: 0 1px 8px 1px black
    cursor pointer
.statusHeader
    div
        cursor pointer
i 
    font-size: 20px
.listContentWrap
    height: 462px
    overflow-y scroll
.addTaskName
    height: 6% !important 
.selected
    transform: scale(1.01)
    box-shadow: 0 1px 8px 1px #000
    cursor: pointer
    background-color grey
.childCateSelected
    transform: scale(1.01)
    box-shadow: 0 1px 8px 1px #000
    cursor: pointer
    background-color grey