$mainColor = #1FB6FF;

.header
  padding-top: 30px;
  box-shadow: 0 0 3px 0 rgba(31,45,61,0.05), 0 2px 6px 0 rgba(31,45,61,0.07);
  padding-bottom: 30px;

.header__content
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin 0 auto;
.header__left
  display: flex;
  justify-content: space-between;
  width: 50%
  &__logo
    display: flex;
    text-decoration none;
  &__icon
    &__big
      display: flex;
      align-items: center;
      box-sizing: border-box;
      height: 38px;
      width: 38px;
      border: 3px solid #3B4858;
      border-radius: 20px;
    &__small
      margin 0 auto;
      box-sizing: border-box;
      height: 18px;
      width: 18px;
      border: 2px solid #3B4858;
      background-color: #1FB6FF;
      border-radius: 20px;
  &__text
    font-size 36px;
    font-weight 700;
    line-height 36px;
    color: $mainColor;
    margin-left: 15px;
    &__span
      color black;
  &__menu
    display: flex;
    justify-content: space-between;
    width: 45%;
    &__btn1
      border none;
      background-color #FFFFFF;
      font-size 18px;
      font-weight 600;
      line-height 32px;
    &__btn2
      border none;
      background-color #FFFFFF;
      font-size 18px;
      font-weight 600;
      line-height 32px;
    &__btn3
      border none;
      background-color #FFFFFF;
      font-size 18px;
      font-weight 600;
      line-height 32px;
.header__right
  &__cart
    &__btn
      border none;
      background-color #FFFFFF;
      padding 20px;
    &__btn:hover .fa-shopping-cart
      color $mainColor;
.fa-shopping-cart
  color: #8392A6;
  font-size 20px
  transition $transition;