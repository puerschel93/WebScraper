.gallery__wrapper {
    display: flex;
    flex-direction: column;
    align-items: stretch;
}

.gallery {
    overflow: hidden;

    &:after {
        content: '+';
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.25);
        color: white;
        font-size: 8em;
        font-weight: 700;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.25s ease;
    }

    &_dropping:after {
        opacity: 1;
    }
}

.gallery__grid {
    margin: 10px -8px -8px 0;
    flex-grow: 1;
    display: flex;
    flex-wrap: wrap;
}

.preview {
    margin: 0 8px 8px 0;
    overflow: hidden;
    border-radius: 5px;
    transition: transform 0.25s ease;
    flex-grow: 1;
    max-height: 60vh;
    max-width: 55%;
    cursor: pointer;
    will-change: transform;
    position: relative;

    &:hover {
        transform: scale(0.985);

        .preview__delete-button {
            opacity: 0.65;
            pointer-events: unset;

            &:hover {
                opacity: 1;
            }

            @media sm {
                opacity: 1;

                &:hover {
                    transform: unset;
                }
            }
        }
    }

    @media sm {
        max-width: 100%;

        &:hover {
            transform: unset;
        }
    }

    &:after {
        content: 'Something awesome is loading...';
        padding-top: 10px;
        height: 100%;
        width: 100%;
        background: url('/images/tenor.gif') 50% 50% / cover;
        background-color: #999;
        color: white;
        font-weight: 700;
        text-align: center;
        position: absolute;
        left: 0;
        top: 0;
        transition: opacity 0.25s ease;
        pointer-events: none;
    }

    &.loaded:after {
        opacity: 0;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: 50% 50%;
    }
}

.preview__delete-button {
    position: absolute;
    right: 13px;
    top: 13px;
    background: #eee url('/images/delete-icon.svg') 50% 50% / 10px 10px no-repeat;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: none;
    opacity: 0;
    pointer-events: none;
    z-index: 1;
    transition: all 0.25s ease;
    cursor: pointer;

    @media sm {
        width: 16px;
        height: 16px;
        opacity: 1;
        background-size: 8px 8px;
    }
}

// uploader
.gallery__uploader {
    padding-top: 10px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;

    @media sm {
        flex-direction: column;
        align-items: stretch;
    }
}

.upload-button {
    margin-left: 15px;
    padding: 0 10px;
    height: 48px;
    flex-basis: 200px;
    background: #cecece;
    font-weight: 700;
    font-size: 19px;
    cursor: pointer;
    text-transform: uppercase;
    border-radius: 4px;
    transition: background-color 0.25s ease, color 0.25s ease;

    &:hover {
        background-color: #00bb00;
        color: white;
    }

    &:active {
        background-color: #dedede;
    }

    @media sm {
        margin: 15px 0 0 0;
        flex-basis: unset;
    }
}

.upload-input {
    padding: 0 15px 0;
    border: none;
    height: 48px;
    flex-grow: 1;
    font-size: 19px;
    line-height: 19px;
    border-radius: 4px;

    &:focus {
        outline: transparent;
    }
}
