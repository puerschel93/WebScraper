
.mainTitle
    @extends .uppercase
    @extends .text-main

.banners
    @extends .padding-zero
.img-back-leort
    @extends .back-contain
    background-image: url('../img/background-topo.png')
    background-repeat: no-repeat
    background-position: center center
    padding-top: 80px


.cat
    box-shadow 0 0 3px lightgray
    padding 30px
    background #f7f7f7
    margin 0 10px
    margin-top 20px
    width 19%
    flex 1
    transition 0.4 filter
    &:hover 
        img
            filter brightness(2)
    p
        margin 0
        padding 0
        line-height 1
        margin-top 10px
        letter-spacing -0.2px
        color: $colors['main']
        font-weight 300

.tec-texto
    margin-top: 50px


.bg-imagem-tec
    @extends .back-cover
    background-image: url('../img/fundo-footer.jpg')
    background-position: bottom center;
    background-repeat: no-repeat;
    background-size: auto;
#c-banner
.item-c
    z-index: 999;
    position: relative;


.icon-acoes
    max-width 50px
    margin-right: 10px

.bandeira
    @extends .absolute
    bottom: 30px
    left 0
    z-index 99
    width: 37%;
.section
    padding 100px 0
.leort-desc
    box-shadow: 0px 4px 1px $shadow-color
.marca-desc
    margin-top: 10px
    margin-bottom: 30px

.argila-title 
    text-transform uppercase
    font-weight 100
    letter-spacing 2px
.item-artigos
    padding 25px

.text-leort
    margin-top: 260px

.seta-left
.seta-right
    position absolute
    top 50%
    cursor pointer
    z-index 99
.seta-left
    left -70px
.seta-right
    right -70px

.line-verde
    width: 100%
    height 1px
    background-image: url(../img/linha-verde.png)
    background-position: center
.line-small
    background-image: url(../img/linha-verde.png)
    background-position: center center
    background-size: contain
    height 2px

#spinner
    display none
    margin: auto
    animation: rotacao 2s infinite

.leort-image-text
    padding-top 180px
    padding-left 30px
    .segredo
        padding-top 40px

.form-contato
    .col-sm-12
    .col-xs-12
    .col-sm-6
    .col-md-6
        padding-left: 5px;
        padding-right: 5px;


.text-banner-2
    margin-top 25px
    padding-left: 25px
    h5
        line-height: 0.7
        span
            font-size: 30px
            font-weight: light

    img
        margin-top 20px


.texto-banner-1
    font-size: 30px
    line-height: 1.2

.background-tec
    background-image: url(../img/background-tec.jpg);
    background-position: center bottom;
    background-repeat: no-repeat;
    background-size: auto;
    padding-bottom: 220px;

#estados
  border: 1px solid #005620;
  padding-left: 0;


#estados li:hover
  background-color: rgb(11, 146, 11);
  transition: 0.5s;


.estado
  list-style: none;
  color: #fff;
  text-align: center;
  padding: 10px;
  font-size: 20px;
  cursor: pointer;
  text-transform: uppercase;


.estado:nth-child(odd)
  background-color: #005620;


.estado:nth-child(even)
  background-color: #026d2a;


.voltarTela
  margin-top: 30px;


#cidades
  border: 1px solid #005620;
  padding-left: 0;


#cidades li:hover
  background-color: rgb(11, 146, 11);
  transition: 0.5s;


.cidade
  list-style: none;
  color: #fff;
  text-align: center;
  padding: 10px;
  font-size: 20px;
  cursor: pointer;
  text-transform: uppercase;


.cidade:nth-child(odd)
  background-color: #005620;


.cidade:nth-child(even)
  background-color: #026d2a;

#revendores
    padding-left: 0;
    box-shadow: 1px 1px 20px -8px;
    li
        background-color: #fff
        color: #333
        list-style none
        padding: 2px 30px;
        border-radius: 5px;

#revendores
    .cidade
        padding-top: 15px
        padding-bottom: 23px

.background-topo
    background-image: url('../img/leortecaixa2.png')
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 400px center;

.bg-lipo
    background-size: cover;
    background-repeat: no-repeat;
    background-position: left center;

#banner-container 
    overflow: hidden;

#banner-container 
    overflow: hidden;

.centralizar
    display: flex;
    justify-content: flex-end;
    width: 100%;
    height: 100%;
    flex-wrap: wrap;
    & > * 
        align-self: center

.texto-banner
    justify-content: flex-end;
    float: right;
    margin-right: 20px
    padding 20px

.texto-leort
    justify-content: flex-end;
    float: right;
    margin-right: 200px;

.c-banner
    height 800px
    width: 100%

#voltarHome
    margin-top 40px
    text-align center
    background-color #005620
    &:hover
        background-color #005620
        color #fff
    &:active
        background-color #005620
        color #fff
#enviarPedido
    background-color #005620
    &:hover
        background-color #005620
        color #fff
    &:active
        background-color #005620
        color #fff

.modal-content
    padding-bottom: 25px;

.btn-login
    border-radius 8px

.aba-login
    .close
        opacity 1
    .fechar-login
        width 40px
        position absolute
        top -15px
        right -15px

#area-restrita
    text-transform uppercase
    background-color transparent
    border none
    font-weight bold
    &:hover
        text-decoration underline

.link-cadastrar
    cursor pointer
    &:hover
        text-decoration underline

@media screen and (max-width: $queries['large'])
    .leort-image-text
        padding-top 20px
        padding-bottom: 0
    .text-leort
        margin-top: 60px
    .bandeira
        width: 100%;
        bottom: 0;
        left: -70px;
    .seta-left
        left -10px
    .seta-right
        right -10px

@media screen and (max-width: $queries['medium'])
    .cat
        width 50%
    .bandeira
        bottom: 30px;
        max-width: 450px;
        left: -50px;
    footer
        .container
            div
                margin-top 20px
    .text-banner-2
        text-align: center
        p
            line-height: 1
            text-align: center
        img
            margin auto
            margin-top 20px
    .section
        padding 50px 0
        padding-bottom: 80px
    .leort-image-text
        padding-top 60px
        padding-bottom: 60px
    .img-back-leort
        text-align: center
        padding-top: 0

    img.leort-banner1
        margin auto  
    .text-leort
        margin-top: 20px

    .leort-banner1
        margin 0 0 0 0
    .img-back-leort
        img 
            max-width 280px
    .seta-left
        left 0
    .seta-right
        right 0


@media screen and (max-width: $queries['small'])
    .tec-texto
        margin-top: 10px
    .seta-left
        left 0
    .seta-right
        right 0
    .cat
        width 99%
    .leort-desc
        margin-top 40px
    //tetste
    .item-c
        h1
        p 
            text-align: center
        p 
            font-size: 18px
            line-height: 1.2
            margin-bottom: 10px
            img
                margin: auto

        .text-banner
            img
                margin: auto

@media screen and (max-width: 1750px)
    .background-topo
        background-position: 100px center;
    .texto-banner
        background-color: rgba(255,255,255,0.8)
        margin-top: 20px


@media screen and (max-width: 1450px)
    .leort-banner1
        width: 370px
        margin: auto
    .texto-leort
        margin-right: 10px;

@media screen and (max-width: 1350px)
    .background-topo
        background-position: 50px center;

@media screen and (max-width: 1286px)
    .seta-left
        left -20px
    .seta-right
        right -20px

@media screen and (max-width: 1024px)
    .language-w
        margin-top 10px
    .seta-left
        left -10px
    .seta-right
        right -10px
    .texto-leort
        background-color: rgba(255,255,255,0.9)

    .bg-striort
        background-position: left 300px;

@media screen and (max-width: 900px)
    .background-topo
        background-size: 350px;
        background-position: center center;
    .centralizar
        & > *
            align-self: flex-start
    .texto-banner
        margin-right: 0
        text-align: center

@media screen and (max-width: 768px)
    .modal-content
        margin-top 50px

@media screen and (max-width: 600px)
    .texto-leort
        background-color: rgba(255,255,255,0.9)
        h2
            text-align: center
    .texto-banner
        margin-right: 0
        
@media screen and (max-width: 390px)
    .language-w
        margin-top 0
    .bandeira
        bottom: 30px;     
        max-width: 350px;     
        left: -50px;

@media screen and (max-width: 320px)
    .texto-leort
        margin-right: 0
    
    .background-topo
        background-position: left center;