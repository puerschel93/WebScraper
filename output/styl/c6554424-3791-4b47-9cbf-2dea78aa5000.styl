@import './dialog';

html,
body
  width 100%
  height 100%

*
  touch-action none

#app
  width 100%
  height 100%

  > div
    width 100%
    height 100%
    background #fff
    overflow hidden

a
  color currentColor

.tap:active
  background-color tapColor

// ----- cube-ui start -----
.cube-btn
  background primaryColor
.cube-btn-outline
  background transparent
.cube-tab_active
  color primaryColor

.cube-tab-bar-slider
  background-color primaryColor

.cube-input_active:after
  border-color primaryColor

.cube-checkbox_checked .cube-checkbox-ui i
  color primaryColor

.cube-radio_selected .cube-radio-ui
  background-color primaryColor

.cube-switch .cube-switch-input:checked+.cube-switch-ui
  border-color primaryColor
  background-color primaryColor

.cube-select_active:after
  border 1px solid primaryColor

.cube-picker-confirm
    color primaryColor

.cube-dialog-btn_highlight
  color primaryColor
// ----- cube-ui end -----

.loading-inline
  display inline-block
  vertical-align middle
  margin-right 20px

// ----- iconfont start -----
.icon {
  width: 1em;
  height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
}
// ----- iconfont end -----

.flex
  display flex

.flex-auto
  flex 1

.flex-align-center
  align-items center

.flex-justify-center
  justify-content:  center

.layout-page
  display flex
  flex-direction column

  &-document
    position absolute
    z-index 10
    top 0
    left 0
    right 0
    bottom 0
    display flex
    flex-direction column

  &-wrap
    position relative
    flex 1
    height 200px
    background #F8F8F7 !important

    &-scroll
      display flex
      flex-flow column

  &-container
    padding-top 20px
    padding-bottom 150px

  &-scroll-bottom
    padding-bottom 150px

.form
  background transparent
  .cube-form-label
    color #000

  &-width-label .cube-form-label
    width auto!important

  &-right-align
    & .cube-validator-content,
    & .cube-select
      text-align right

    & .form-content
      justify-content flex-end

    & .cube-switch
      justify-content flex-end

  &-header
    color #808080
    margin-left 20px
    margin-top 40px
    margin-bottom 10px
    font-size 12PX

  &-group
    margin-top 20px
    margin-bottom 20px
    background-color #fff

  &-content
    display flex
    align-items center
    width 100%
    height 46PX

  &-content-item
    display inline-block
    line-height 46PX

  &-overlap.cube-form-group
    overflow visible

  & .cube-validator-content > input
    width 100%

  &-btn-group
    display flex
    padding 0 containerWidth
    margin 0 -20px

  &-btn-item
    flex 1
    padding 0 20px

// list
.y-list
  position relative
  font-size 30px
  background-color #fff

  .y-list-header
    padding 47px 0 0 35px
    height 84px
    background rgba(248, 248, 247, 1)
    font-size 24px
    font-weight 400
    color rgba(0, 0, 0, 0.5)

  .y-list-item
    position relative
    display flex
    justify-content space-between
    align-items center
    padding 0 0 0 35px
    min-height 92px

  .y-list-item:active
	  background-color: rgba(0, 0, 0, 0.1)

  .y-list-item-inner
    flex 1
    display flex
    justify-content space-between
    align-items center
    padding-right 35px
    min-height 92px

  .y-list-item__icon
    width 65px
    font-size 40px

  .y-list-item__label
    display flex
    align-items center
    padding 30px 0
    min-width 165px
    min-height 92px
    font-size 30px

  .y-list-item__content
    // flex 1
    // display flex
    // justify-content space-between
    // align-items center
    // padding-right 35px
    // min-height 92px
    text-align right
    // font-size 30px

// 空行16px高
.y-space
  height 16px
  background rgba(248, 248, 247, 1)


.text-center
  text-align center

.text-strong
  font-weight bold

.text-warn
  color textWarn

.text-disabled
  color textDisabled

.prompt-dialog-focus .cube-popup-center .cube-popup-content
  transform translate(-50%,-95%)

.no-data
  padding 200px 0 0
  background rgba(248, 248, 247, 1) // 统一背景色
  text-align center
  color rgba(0, 0, 0, 0.5)

.home-info-card
  padding containerWidth
  background-color #fff
  line-height 1.6