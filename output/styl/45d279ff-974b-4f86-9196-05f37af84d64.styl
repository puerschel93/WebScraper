// app global css in Stylus form
*
  font-family "Montserrat", sans-serif
  --main-bg-color #fff
  --main-borders-color #2E2768//#3A6E8F
  --btn-color #C00027
  --btn-color1 #D00027
  --violet-btn-color #8645FF
  --violet2 #9955FF
  --violet-light #eeddFF
  --chip-color rgba(134, 69, 255, 0.2)
  --color1 #2E2768 //#181059
  --color-graypink #F8F4FF
  --footer-color #EDEEF2
  --logoWidth 180px
  --maxW 1135px
  --menubg-color #ECEDF0
  @media screen and (max-width: 1160px)
    --maxW 100%
body
  background-image url('/statics/bg1.png'), url('/statics/bg2.png'), linear-gradient(180deg, var(--footer-color), var(--footer-color))
  background-repeat no-repeat
  background-size: auto, auto, 100% 200px
  background-position right top, left 18px bottom, center bottom
  @media screen and (max-width 550px)
    background-size: auto, 160px, 100% 200px
    background-image url('/statics/bg1-mobile.png'), url('/statics/bg2-mobile.png'), linear-gradient(180deg, var(--footer-color), var(--footer-color))
    background-position right top, left 8px bottom, center bottom

.social-link
  margin-right 10px

.social-icon
  fill var(--color1)
  width 26px
  height 26px
  @media screen and (max-width 550px)
    width 20px
    height 20px
.vk
  &:hover
    fill #4c75a3
.tg
  &:hover
    fill #00bfff
.insta
  &:hover
    fill #E1306C


#q-app
  box-sizing border-box
  position relative
  font-family 'Montserrat', sans-serif
  text-align center
  color #2c3e50
  font-size 13px
  line-height 14px
  margin auto
  min-height 100vh
  display flex
  flex-direction column
  //padding-bottom 70px
  //border-bottom 1.5px solid red//#E6E6E6
  .header-wrapper
    border-bottom 1.5px solid #E6E6E6
    @media screen and (max-width 550px)
      border-bottom 0
  header
    display flex
    align-items center
    justify-content space-between
    margin 0px auto
    height 115px
    padding 0px
    box-sizing border-box
    max-width var(--maxW)
    @media screen and (max-width 1160px)
      padding 0px 10px
    @media screen and (max-width 950px)
      height 95px
      margin 0px
    @media screen and (max-width 800px)
      height 75px
      padding 0px 5px
    @media screen and (max-width 550px)
      flex-wrap wrap
      margin-top 30px
      margin-bottom 20px
      height auto
      padding 0 20px
    #nav
      display flex
      align-items center
      margin-left auto
      margin-right 15px
      @media screen and (max-width 550px)
        margin-left 0
        margin-right 0
        order 4
        width 100%
        justify-content center
        align-items flex-end !important
      .addJobMargin550
        @media screen and (max-width 550px)
          margin-top 21px
    .header__langchanger
      @media screen and (max-width 550px)
        order 1
    #authmenu
      @media screen and (max-width 550px)
        order 3

  .r-link
    margin-right 10px
    display block
    border-radius 4px
    color var(--main-borders-color)//purple
    text-decoration none
  h1,h2,h3,h5,h6
    font-size 14px
    line-height 1
  h4
    line-height 1
  .searched
    background-color yellow
  .r-view
    max-width var(--maxW)
    min-height calc(100vh - 150px - 2px - 200px)
    box-sizing border-box
    margin 0 auto
  .pageHeader
    font-family: Montserrat;
    font-weight: bold;
    font-size: 16px;
    line-height: 20px;
    text-transform uppercase
    color var(--btn-color)
    margin 23px 0
  .logoText
    color var(--color1)
    letter-spacing 0.115em
    font-size 34px
    font-weight bold
    font-family 'Montserrat', serif
    line-height 123.4%
    @media screen and (max-width 800px)
      letter-spacing 0.05em
      font-size 24px
  .logolink
    margin-right 10px
    text-decoration none
    @media screen and (max-width 550px)
      // font-size 24px
      // margin-right 2px
      margin 5px auto
      // margin-bottom 21px
      // display block
      order 2
  .headerBtns1
    padding 0 5px
    white-space nowrap
    background-color: var(--btn-color);
    font-weight: bold;
    align-self:flex-start;
    border-radius 10px
    height 40px
    transition-duration 0.3s
    @media screen and (max-width 800px)
      height 40px
      padding 0
      white-space normal
      max-width 180px
    @media screen and (max-width 550px)
      max-width none
      padding 0 8px
      height 35px
    div
      font-family 'Montserrat', sans-serif !important
      font-size 14px !important
      line-height 17px !important
      @media screen and (max-width 800px)
        line-height 1 !important
        //max-height 30px
        padding 0 5px
      @media screen and (max-width 550px)
        font-weight: 600 !important
        font-size: 12px !important
        line-height: 15px !important
      div
        @media screen and (max-width 800px)
          //max-height 24px
          padding 0
  .addJobSpecific
    @media screen and (max-width 550px)
      width 180px
      height auto
      line-height calc(1rem + 2px)
      font-size 14px
      padding 0
  .headerBtnRed
    &:hover
      background-color var(--btn-color1) !important
  .violetBtns
    padding 0 3px
    margin-left 15px
    box-shadow 0 1px 5px rgba(0,0,0,0.2), 0 2px 2px rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12)
    &:active
      box-shadow 0 3px 5px -1px rgba(0,0,0,0.2), 0 5px 8px rgba(0,0,0,0.14), 0 1px 14px rgba(0,0,0,0.12)
    @media screen and (max-width 800px)
      margin-left 10px
      padding 0 6px
  .loginbtn
    background-color var(--violet-btn-color)
    font-weight 700 !important
    outline none
    &:hover
      background-color var(--violet2)
    &:focus
      background-color var(--violet2)
    @media screen and (max-width: 800px)
      margin-left 0
    @media screen and (max-width: 550px)
      background url('/statics/login.png')
      background-repeat no-repeat
      width 22px
      height 22px
      padding 0 !important
      &:hover
        background-color transparent
        filter: brightness(1.5)
  .noshow-below550
    @media screen and (max-width 550px)
      display none
  .displayblock-only550
    display none
    @media screen and (max-width 550px)
      display block
  .displaytc-only550
    display none
    @media screen and (max-width 550px)
      display table-cell
  .scrollTopBtn
    position fixed
    bottom 12px
    left 40px
    opacity 0.7
    z-index 3
  .main__footer
    display flex
    justify-content flex-end
    margin 0 auto
    // margin-top 20px
    margin-top: auto;
    padding-top 30px
    box-sizing border-box
    height 200px
    //width 720px
    width var(--maxW)
    padding 30px 200px 12px 100px
    @media screen and (max-width 950px)
      padding 25px 75px 12px 50px
      width auto
      max-width var(--maxW)
    @media screen and (max-width 800px)
      padding 20px 15px 12px 15px
    @media screen and (max-width 550px)
      height 200px
      padding 15px 20px
    .footer__ul-top
      display flex
      list-style-type none
      padding 0
      margin 0
      width 100%
      justify-content space-between
      @media screen and (max-width 550px)
        flex-wrap wrap
      h3
        text-decoration none
        font-family: Montserrat, sans-serif
        font-weight bold
        font-size: 12px;
        line-height: 15px;
        color var(--color1)
        margin 0
        margin-bottom 15px
        @media screen and (max-width 800px)
          margin-bottom 10px
        @media screen and (max-width 550px)
          font-size: 11px;
          line-height: 13px;
      li
        padding 0
        margin 0
        text-align left
        max-width 20%
        @media screen and (max-width 800px)
          max-width 26%
        @media screen and (max-width 550px)
          display inline-block
          max-width 50%
          margin-bottom 12px
          min-width 112px
        ul
          list-style-type none
          width 100%
          padding 0
          margin 0
          li
            max-width 100%
            margin 3px 0
            @media screen and (max-width 550px)
              margin 1px 0
            a
              width 100%
              text-decoration none
              font-family: Montserrat, sans-serif
              font-size: 12px;
              line-height: 15px;
              color var(--color1)
              &:hover
                color var(--violet-btn-color)
              @media screen and (max-width 550px)
                font-size: 11px;
                line-height: 13px;
        &:last-child li a
          font-weight bold
    .li2
      @media screen and (max-width 550px)
        order 1
    .li2
      @media screen and (max-width 550px)
        order 4
    .li3
      @media screen and (max-width 550px)
        order 2
    .li4
      @media screen and (max-width 550px)
        order 3
  .user-status-bar
    display flex
    align-items center
  .headerBtn
    text-decoration none
    color var(--main-borders-color)
    font-size 16px
    background-color transparent
    text-transform uppercase
    margin 0 2px
    border-radius 4px
    padding-right 0px
    letter-spacing 2px
    font-weight 700
    &:hover
      color var(--violet-btn-color)//var(--btn-color)
.marginLeft30pxOnBig
  margin-left 30px
  @media screen and (max-width 550px)
    margin-left 0px
.multipleUploadsHeader
  margin-right 5px
  transition-duration 0.25s
  &:hover
    color var(--violet-btn-color)
  @media screen and (max-width 550px)
    margin-right 0px
.footerLinkFB
  background-color: var(--violet-btn-color) !important
  color: white !important
  font-family: Montserrat, sans-serif
  padding 0 5px !important
  text-align: center;
  display: inline-block;
  margin: 0 !important
  text-transform uppercase
  width 136px !important
  &:hover
    background-color var(--violet2) !important
  @media screen and (max-width 550px)
    width auto !important

#q-app .headerBtns1 .q-btn__wrapper
  @media screen and (max-width 800px)
    padding 5px !important
#q-app .footerLinkFB.headerBtns1 div
  font-weight 600 !important
  font-size 13px !important
  line-height: 13px !important
  @media screen and (max-width 550px)
    font-size: 10px !important
.nav-icon
  @media screen and (max-width 550px)
    font-size 30px !important
.nav-icon-upl
  @media screen and (max-width 550px)
    font-size 35px !important
.nav-icon-logout
  @media screen and (max-width 550px)
    font-size 26px !important


.q-chip
  background-color var(--chip-color)
  height 28px
.q-chip__content
  padding 0 6px !important
