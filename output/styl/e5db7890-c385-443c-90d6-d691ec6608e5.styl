.menu {
  margin: 0;
  padding: 0;
  +mobile() {
    display: flex;
    position: absolute;
    width: 100vw;
    background: #fff;
  }
}

.menu .menu-item {
  display: block;
  line-height: 54px;
  cursor: pointer;
  overflow: hidden;
  padding: 0 20px;
  margin-bottom: 15px;
  text-align: left;
  border-radius: 9999px;

  +desktop() {
    width: 54px;
    padding: 0;
    text-align: center;
    border-radius: 50%;
  }
  +tablet() {
    width: 54px;
    padding: 0;
    text-align: center;
    border-radius: 50%;
  }
  +tablet-small() {
    width: 54px;
    padding: 0;
    text-align: center;
    border-radius: 50%;
  }
  +mobile() {
    flex: 1;
    width: 54px;
    padding: 0;
    text-align: center;
    border-radius: 50%;
  }

  &:hover {
    background: #E7E7E8;
    +mobile() {
      background: #fff;
    }
  }

  a {
    color: rgb(15, 20, 25);
    border-bottom: 0;

    .menu-item-icon {
      font-size: 25px;
    }
    .menu-item-name {
      margin-left: 5px;
      +desktop() {
        display: none;
      }
      +tablet() {
        display: none;
      }
      +tablet-small() {
        display: none;
      }
      +mobile() {
        display: none;
      }
    }
    .fa-home {
      transform: translateY(1.5px);
    }
  }

  br { display: none; }
}

.menu .menu-item-active {
  background: #fff;

  a {
    color: $theme-blue;
  }
}

.btn-bar {
  background-color: white;
}

.site-nav-toggle {
  left: 20px;
  top: 50%;

  -webkit-transform:  translateY(-50%);
  transform:  translateY(-50%);
}
