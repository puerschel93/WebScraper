/* helpers //////////////////////////////////////////////*/
@import "./helpers"


/* reset ////////////////////////////////////////////////*/
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section
  display block

ol,
ul
  list-style none

blockquote,
q
  quotes none

blockquote:before,
blockquote:after,
q:before,
q:after
  content ""
  content none

table
  border-collapse collapse
  border-spacing 0


/* base /////////////////////////////////////////////////*/
@font-face
  font-family Pictos
  src url(/fonts/pictos-web.eot)
  src url(/fonts/pictos-web.eot?iefix) format("eot"), url(/fonts/pictos-web.woff) format("woff"), url(/fonts/pictos-web.ttf) format("truetype"), url(fonts/pictos-web.svg#svgPictos) format("svg")

body
  padding 0
  margin 0
  font normal 14px/14px arial
  overflow-y scroll

a
  color #000
  text-decoration none

a:hover
  color #ccc
  text-decoration underline

a:active
  position relative
  top 1px

p
  padding 0
  margin 10px

strong
  font-weight bold


/* global ///////////////////////////////////////////////*/
.clearfix:after
  content "."
  visibility hidden
  display block
  height 0
  clear both

.icon
  cursor pointer
  display inline-block
  font normal normal normal 22px/1 Pictos
  text-rendering geometricPrecision
  /* auto | optimizeSpeed | optimizeLegibility | geometricPrecision | inherit */
  position relative
  text-transform none
  text-decoration none
  padding 0
  margin 0
  z-index 1

.icon:focus,
.icon:hover
  color #a1a1a1

.icon:active
  top 1px


/* widgets //////////////////////////////////////////////*/
.btn
  position relative
  display inline-block
  letter-spacing 2px
  text-transform uppercase
  text-decoration none
  color #fff
  border 1px solid #fff
  cursor pointer
  padding 10px
  outline none
  text-align center
  background #000
  background -moz-linear-gradient(top, #777 0%, #000 100%)
  background -webkit-linear-gradient(top, #777 0%, #000 100%)
  background-clip padding-box
  border-radius 5px
  text-shadow -1px -1px 0 rgba(0, 0, 0, 0.9)
  transition background 0.2s ease

.btn:hover,
.btn:focus
  color #fff
  background #333
  background -moz-linear-gradient(top, #777 0%, #333 100%)
  background -webkit-linear-gradient(top, #777 0%, #333 100%)
  background-clip padding-box
  text-decoration none
  text-shadow -1px -1px 0 rgba(0, 0, 0, 0.9)
  outline none

.btn:active
  color #fff
  background #333
  background -moz-linear-gradient(top, #333 0%, #555 100%)
  background -webkit-linear-gradient(top, #333 0%, #555 100%)
  background-clip padding-box
  text-decoration none
  top 1px
  outline none
  box-shadow inset 1px 1px 5px rgba(0,0,0,0.5)

.btn.small
  padding 5px 5px 5px 7px
  margin 0 5px 0 0
  vertical-align 1px

.alert
  background #FF0000
  background -webkit-gradient(linear, 0% 0%, 0% 100%, from(#FF6666), color-stop(0.9, #FF0000), to(#FF0000))
  background -moz-linear-gradient(0% 100% 90deg, #FF0000, #FF0000, #FF6666 90%)
  background-clip padding-box
  border-radius 8px 8px 8px 8px
  box-shadow 2px 4px 4px rgba(0, 0, 0, 0.5)
  padding 7px 10px
  position fixed
  color #fff
  text-align center
  text-shadow 0 -1px 1px rgba(0, 0, 0, 0.5)
  z-index 9999

.alert span.icon
  margin 0 5px 0 0
  cursor default

.alert span.icon:hover,
.alert span.icon:active
  top 0px
  color #fff

.alert span strong
  text-transform uppercase

.error
  color #ff0000
  font bold 240px/230px arial
  text-align center
  text-transform uppercase

.error span
  display block
  font bold 16px/16px arial
  margin 60px 0 0

.error a,
.error a:active,
.error a:visited
  color #000
  text-decoration none

.error a:hover
  text-decoration underline


/* structure ////////////////////////////////////////////*/
#main
  position absolute
  display block
  width 880px
  left 50%
  margin-left -440px
  margin-top 20px
  overflow hidden

#title
  font bold 223px/190px arial
  letter-spacing -26px
  text-align left
  text-rendering optimizeLegibility
  padding 10px 0
  margin 0


/* main /////////////////////////////////////////////////*/
.titleLetter
  color rgb(255, 0, 0)
  color rgba(255, 0, 0, 0.8)

.feed
  right 10px
  top 10px
  background #F7941D
  background -moz-linear-gradient(0% 100% 90deg, #F7941D, #F7941D, #F7D754 95%)
  background -webkit-gradient(linear, 0% 0%, 0% 100%, from(#f7d754), color-stop(0.9, #f7941d), to(#f7941d))

.feed a
  padding 8px 8px 6px 8px
  text-shadow -1px -1px 0 rgba(0, 0, 0, 0.6)
  font-size 22px

.home
  top 10px
  left 10px
  background #000
  background -moz-linear-gradient(top, #777 0%, #000 100%)
  background -webkit-linear-gradient(top, #777 0%, #000 100%)

.home a
  padding 8px
  margin 0
  font-size 34px

.nav
  position fixed
  z-index 9999
  border-radius 8px
  box-shadow 2px 3px 4px rgba(0, 0, 0, 0.5)

.nav a
  color #fff
  text-align center
  text-decoration none
  text-shadow -1px -1px 0 rgba(0, 0, 0, 0.9)

.nav a:hover
  text-decoration none
  color #fff

.subNav
  //display none // initial state - shown after animation completes
  list-style-type none 
  padding: 0 0 0 1px

.subNav li
  display inline-block
  position relative
  margin 12px
  font normal 72px/60px arial
  color #000
  width 150px
  height 150px

.subNav a,
.subNav a:visited,
.subNav a:active
  color #000
  display block
  padding 45px
  text-decoration none
  background rgba(255, 255, 255, 0.6)

.subNav a:active
  top 0
  font-style italic

.subNav li:hover,
.subNav li:hover a
  background rgba(0, 0, 0, 0.1)
  color #fff

.subNav img
  position absolute
  top 0
  left 0
  z-index -1

/* raw //////////////////////////////////////////////////*/
.tab
  position fixed
  z-index 9999
  pointer-events none

.tab a,
.tab a:visited,
.tab a:active
  color #000
  text-decoration none
  font-weight bold
  text-shadow 0 1px 0 #fff
  pointer-events auto

.tabTitle
  float left
  background-color #a1a1a1
  background-image -webkit-gradient(linear, 0% 0%, 0% 100%, from(#C9C9C9), color-stop(0.8, #A1A1A1), to(#A1A1A1))
  background-image: -moz-linear-gradient(0% 100% 90deg, #A1A1A1, #A1A1A1, #C9C9C9 100%)
  border-radius 10px 10px 0 0
  color #000
  padding 10px 10px 5px 10px
  font bold 14px/14px sans-serif
  text-transform uppercase
  cursor pointer
  pointer-events auto
  height 16px
  text-align center
  box-shadow 2px 2px 4px #000
  text-shadow 0 1px 1px rgba(255, 255, 255, 0.8)

.tabContent
  float left
  background: #a1a1a1
  padding: 10px
  pointer-events: auto
  border-radius 0 10px 0 0
  box-shadow 2px 4px 4px #000
  width 100%

.tabContent p,
ul.insetList
  padding 0
  pointer-events auto
  margin 0
  list-style none

.insetList li
  pointer-events auto
  background-color #ddd
  border-radius 8px
  color #000
  box-shadow inset 1px 1px 1px #000
  text-align right
  margin 0 0 10px 0

.insetList li:last-child
  margin 0

.insetList li:hover
  background #fff

.insetList a,
.insetList a:visited,
.insetList a:active
  color #000
  display block
  text-decoration none
  font-weight bold
  text-shadow 0 1px 0 #fff
  pointer-events auto
  padding 5px 10px

.insetList a:active
  position relative
  left 1px

.insetBox
  position relative
  background #ddd
  border-radius 8px
  color #000
  box-shadow inset 1px 1px 1px #000
  margin 0 0 10px 0
  padding 10px
  pointer-events auto
  font-size 13px
  text-shadow 0 1px 0 rgba(255, 255, 255, 0.8)

.insetBox img
  pointer-events auto
  margin 0 0 7px 0

.insetBox img.avatar
  float left
  margin 0 10px 0 0
  pointer-events auto

.postTitle
  position absolute
  font bold 16px/12px arial
  top 68px
  background #ddd
  background rgba(0, 0, 0, 0.6)
  margin 0
  padding 0
  color #000
  color rgba(255, 255, 255, 0.9)
  float left
  text-shadow none
  border-radius 0 5px 5px 0
  text-transform uppercase

.postTitle a,
.postTitle a:active,
.postTitle a:visited
  display block
  padding 10px 10px 8px 10px
  text-shadow none
  color #000
  color rgba(255, 255, 255, 0.9)

.postTitle a:active
  position relative
  top 0px
  left 1px

.insetAttr
  position: relative
  background:#ddd
  border-radius 8px
  color #000
  box-shadow inset 1px 1px 1px #000
  margin 0
  padding 5px 10px
  pointer-events auto
  overflow hidden
  font-size 11px
  text-transform uppercase
  text-shadow 0 1px 0 rgba(255, 255, 255, 0.8)

.insetAttr span
  font 16px/10px arial
  position absolute
  top 8px
  right 8px
  text-align right

.insetAttr a:hover:before
  content "permalink:"
  padding 0 12px 0 0
  font 11px/8px arial
  position absolute
  right 1px
  text-transform lowercase
  font-weight bold

#contact
  position fixed
  left 20px
  bottom -315px
  width 275px
  height 345px

#info
  position fixed
  left 120px
  bottom -306px
  width 318px

#disclaimer
  bottom 20px
  right 20px
