.SumoSelect
    width 100%
    display inline-block
    position relative
    outline none
    p
        margin 0
    .hidden
        display none
    .search-txt
        display none
        outline none
    .no-match
        display none
        padding 6px
    &.open
        .search-txt
            display inline-block
            position absolute
            top 0
            left 0
            width 100%
            margin 0
            padding 5px 8px
            border none
            box-sizing border-box
            border-radius 0
        & > .optWrapper
            top 41px
            display block
            &.up
                top auto
                bottom 100%
                margin-bottom 5px
    & > .CaptionCont
        position relative
        min-height 39px
        background-color $color10
        border-radius 0
        margin 0
        & > span
            display block
            padding-right 30px
            text-overflow ellipsis
            white-space nowrap
            overflow hidden
            cursor default
            color $color6
            &.placeholder
                color #ccc
                font-style italic
        & > label
            position absolute
            top 0
            right 0
            bottom 0
            width 30px
            & > i
                background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA0AAAANCAYAAABy6+R8AAAACXBIWXMAAAsTAAALEwEAmpwYAAAAB3RJTUUH3wMdBhAJ/fwnjwAAAGFJREFUKM9jYBh+gBFKuzEwMKQwMDB8xaOWlYGB4T4DA0MrsuapDAwM//HgNwwMDDbYTJuGQ8MHBgYGJ1xOYGNgYJiBpuEpAwODHSF/siDZ+ISBgcGClEDqZ2Bg8B6CkQsAPRga0cpRtDEAAAAASUVORK5CYII=')
                background-position center center
                width 16px
                height 16px
                display block
                position absolute
                top 0
                left 0
                right 0
                bottom 0
                margin auto
                background-repeat no-repeat
                opacity 0.8
    & > .optWrapper
        display none
        z-index 1000
        top 30px
        width 100%
        position absolute
        left 0
        box-sizing border-box
        background $color2
        border 1px solid $color7
        box-shadow 2px 3px 3px rgba($color1, 0.11)
        border-radius 0
        overflow hidden
        ul
            list-style none
            display block
            padding 0
            margin 0
            overflow auto
        & > .options
            border-radius 0
            position relative
            max-height 250px
            li
                &.group
                    &.disabled
                        & > label
                            opacity 0.5
                    & > label
                        cursor default
                        padding 8px 6px
                        font-weight bold
                ul
                    li
                        &.opt
                            padding-left 22px
                &.opt
                    padding 6px 6px
                    position relative
                    border-bottom 1px solid $color8
                    &:hover
                        background-color rgba($color9, 0.2);
                    &.disabled
                        background-color inherit
                        pointer-events none
                        *
                            -ms-filter "progid:DXImageTransform.Microsoft.Alpha(Opacity=50)"
                            opacity 0.5
                label
                    text-overflow ellipsis
                    white-space nowrap
                    overflow hidden
                    display block
                    cursor pointer
                span
                    display none
                &.optGroup
                    padding-left 5px
                    text-decoration underline
            & > li
                &.opt
                    &:first-child
                        border-radius 0
                    &:last-child
                        border-radius 0
                        border-bottom none
        &.okCancelInMulti
            & > .options
                border-radius 0
                & > li
                    &.opt
                        &:last-child
                            border-radius 0
        &.selall
            & > .options
                border-radius 0
                & > li
                    &.opt
                        &:first-child
                            border-radius 0
            &.okCancelInMulti
                & > .options
                    border-radius 0
        &.multiple
            & > .options
                li
                    ul
                        li
                            &.opt
                                padding-left 50px
                    &.opt
                        padding-left 35px
                        cursor pointer
            &.isFloating
                padding-bottom 43px
                & > .MultiControls
                    display block
                    margin-top 5px
                    position absolute
                    bottom 0
                    width 100%
                & > .options
                    li
                        &.opt
                            padding-left 35px
            &.okCancelInMulti
                & > .MultiControls
                    display block
                    & > p
                        padding 6px
                        &:focus
                            box-shadow 0 0 2px rgba($color9, 0.2)
                            border-color rgba($color9, 0.2)
                            outline none
                            background-color rgba($color9, 0.2)
            & > .MultiControls
                & > p
                    display inline-block
                    cursor pointer
                    padding 12px
                    width 50%
                    box-sizing border-box
                    text-align center
                    &:hover
                        background-color #f1f1f1
                    &.btnOk
                        border-right 1px solid #DBDBDB
                        border-radius 0
                    &.btnCancel
                        border-radius 0
        &.isFloating
            position fixed
            top 0
            left 0
            right 0
            width 90%
            bottom 0
            margin auto
            max-height 90%
            & > .options
                max-height 100%
                box-shadow 0 0 100px #595959
                li
                    &.opt
                        padding 12px 6px
        & > .MultiControls
            display none
            border-top 1px solid $color7
            background-color $color2
            box-shadow 0 0 2px rgba($color1, 0.13)
            border-radius 0
    &.disabled
        opacity 0.7
        cursor not-allowed
        & > .CaptionCont
            border-color $color6
            box-shadow none
    .select-all
        border-radius 0
        position relative
        border-bottom 1px solid $color7
        background-color $color2
        padding 8px 0 3px 35px
        height 20px
        cursor pointer
        &.partial
            & > span
                i
                    background-color $color6

.SelectBox
    padding 8px

.sumoStopScroll
    overflow hidden

.SumoSelect.open > .search>span
.SumoSelect.open > .search>label
    visibility hidden

.SelectClass
.SumoUnder
    position absolute
    top 0
    left 0
    right 0
    height 100%
    width 100%
    border none
    box-sizing border-box
    -ms-filter "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"
    opacity 0

.SelectClass
    z-index 1

.SumoSelect > .optWrapper > .options  li.opt label
.SumoSelect > .CaptionCont
.SumoSelect .select-all > label
    user-select none

.SumoSelect > .optWrapper > .options li.opt.sel
.SumoSelect .select-all.sel
    background-color $color9

.SumoSelect > .optWrapper.multiple > .options li.opt span
.SumoSelect .select-all > span
    position absolute
    display block
    width 30px
    top 0
    bottom 0
    margin-left -35px

.SumoSelect > .optWrapper.multiple > .options li.opt span i
.SumoSelect .select-all > span i
    position absolute
    margin auto
    left 0
    right 0
    top 0
    bottom 0
    width 14px
    height 14px
    border 1px solid $color8
    border-radius 0
    box-shadow inset 0 1px 3px rgba($color1, 0.15)
    background-color $color2

.SumoSelect > .optWrapper.multiple > .options li.opt.selected span i
.SumoSelect .select-all.selected > span i
.SumoSelect .select-all.partial > span i
    background-color $successColor
    box-shadow none
    border-color transparent
    background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA0AAAANCAYAAABy6+R8AAAACXBIWXMAAAsTAAALEwEAmpwYAAAAB3RJTUUH3wMdBhAJ/fwnjwAAAGFJREFUKM9jYBh+gBFKuzEwMKQwMDB8xaOWlYGB4T4DA0MrsuapDAwM//HgNwwMDDbYTJuGQ8MHBgYGJ1xOYGNgYJiBpuEpAwODHSF/siDZ+ISBgcGClEDqZ2Bg8B6CkQsAPRga0cpRtDEAAAAASUVORK5CYII=')
    background-repeat no-repeat
    background-position center center

.SumoSelect .select-all > label
.SumoSelect .select-all > span i
    cursor pointer
