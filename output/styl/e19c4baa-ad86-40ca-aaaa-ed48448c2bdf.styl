/* COMMON */

html
  font-size 62.5%
  scroll-behavior: smooth;

body
  color #212020
  fs(23)
  line-height: 1.17
  font-weight 400
  min-width 320px
  height 100%
  font-family $fontUbuntu
    
.cursor-wait
  cursor wait

.noscript
  position fixed
  display flex
  justify-content center
  align-items center
  width 100%
  height 100%
  padding 0 2rem
  line-height 1.25
  background-color #fff
  z-index 999

a
  transition: color .32s

a:hover
  @media (hover: hover) and (min-width: $widthMobile)
    color #F31818

.box
  width 100%
  max-width 124rem
  padding 0 2rem
  margin 0 auto
  z-index 99999

.title
  font-weight 500
  fs(60)

  &--before:before,
  &--after:after
    font-weight 400

  &--before:before
    content "— "

  &--after:after
    content " —"

.btnRed
  display inline-block
  padding cw(22) cw(38) cw(23)
  background-color rgba(0,0,0,.15)
  border .2rem solid #F31818
  color #F31818
  fs(36)
  border-radius 1rem
  transition .32s

  @media (min-width: $widthMobile)
    border-width .3rem
    fs(25)

  &:hover
    @media (hover: hover) and (min-width: $widthMobile)
      color #fff
      background-color #F31818



