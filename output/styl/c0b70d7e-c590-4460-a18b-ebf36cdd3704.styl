
.strateg
	flex 1
	display flex
	justify-content center
	padding 50px 0px

	section
		max-width 400px
		flex 1
		display flex
		flex-direction column
		justify-content space-between
		align-items center

		&>img
			width 100%
			display table
			max-width 300px
			margin-top 50px

		h1
			margin-bottom 36px
			width 100%
			text-align center
			font-size 25px
			letter-spacing 0px
			color mrp-escala-azul-4

		form
			input[type='email'], input[type='password']
				padding 20px
				background escala-cinza-1
				border 2px solid mrp-escala-azul-1
				border-radius 10px
				width 381px
				height 44px
				margin 10px 0px

				&::placeholder
					color mrp-escala-azul-2
					font-size 12px

			small
				font-size 10px
				display flex
				margin 5px 14px

		.buttons
			display flex
			justify-content center
			align-items center
			flex-direction row

			button
				border 2px solid mrp-escala-azul-4
				padding 8px 30px
				margin 32px 10px
				border-radius 10px
				cursor pointer
				font-weight bolder
				transition all 0.5

			button:nth-child(1)
				background-color mrp-escala-azul-4
				color escala-cinza-1

				&:hover
					background-color mrp-escala-azul-hover
					color mrp-branco-gelo

			button:nth-child(2)
				background-color mrp-branco-gelo
				color mrp-escala-azul-4
				

				&:hover
					background-color mrp-escala-azul-revert
					color mrp-branco-gelo

	a
		color mrp-escala-azul-4
		font-size 14px
		margin-bottom auto

	p
		font-size 13px
		display flex
		flex-direction column
		color escala-cinza-10
		text-align center

@media (max-width 850px)
	.strateg
		padding 25px

		section
			img
				margin-top 0px

			form
				width 80vw

				input[type='text']
					width 100%
					margin 5px auto

@media (max-width 450px)
	.strateg
		section
			img
				max-width 200px

@media (max-height 600px)
	.strateg
		section
			img
				margin-top 10px



.produtos{
    width: 100%
    display: flex
    align-items: center
    justify-content: center
}

.produto-pronto{
    display: flex
    flex: 1
    flex-direction: column
    justify-content: center
    align-items: center
    width: 280px
    max-width: 280px
    height: 296px
    max-height: 296px
    background-color:#EAEEEF
    box-shadow: 0px 4px 8px rgba(39, 52, 58, 0.25)
    border-radius: 8px
    position: relative
    cursor: pointer
}

.produto-content{
    display: flex
    flex:1
    flex-direction: column
    justify-content: space-between
}

.produto-thumb{
    display: flex
    width: 100%
    height: 244px
    max-height: 244px
    justify-content: center
    align-items: center
}

.produto-thumb img{
    height: 150px
}

.produto-descricao{
    width: 280px
    max-width: 280px
    height: auto
    min-height: 52px
    display: flex
    background-color: #608F3E
    align-items: center
    justify-content: center
    color: #ffffff
    border-bottom-left-radius: 8px
    border-bottom-right-radius: 8px
}

.produto-content:hover + .produto-hover{
    display: flex
}

.produto-hover{
    display: none
    width: 280px
    height: 100%
    background: #27343A
    opacity: 0.9
    backdrop-filter: blur(4px)
    position: absolute
    border-radius: 8px
    justify-content: center
    align-items: center
    flex-direction: column
    color: white
    z-index: 9
}

.produto-hover .bt{
    background-color: transparent
    border: 2px solid #FFFFFF
    box-sizing: border-box
    border-radius: 4px
    font-weight: 500
    font-size: 18px
    line-height: 150%
    padding: 16px 32px
    margin-bottom: 23px
    width: 232px
    color: #ffffff
}

.produto-hover .bt:hover{
    background-color:white
    color: #27343A
}

.produto-hover span{
    color: white
    cursor: pointer
