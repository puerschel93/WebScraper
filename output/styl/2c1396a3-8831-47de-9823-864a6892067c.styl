.arrow
  position fixed
  bottom 30px
  color $white
  cursor pointer
  transition color .3s ease .3s
  
  &_invert
    color $black
  
  &_left
    left 40px
    transform translateZ(0)
    transition color .3s ease .3s, opacity .5s .5s
    direction rtl
    text-align left
  
  &_right
    right 40px
    text-align right

  &__line-after
  &__line-before
    width 72px
    height 2px
    background-color currentColor
    display inline-block
    vertical-align middle

  &__line-before
    will-change transform,opacity
    transform-origin 0 0
    opacity 0
    transform translateX(0) scaleX(0) translateZ(0)
    transition transform 1s cubic-bezier(.835,-.005,.06,1) 0s, opacity .3s .4s
    
    .arrow.arrow_right &
      transform translateX(100px) scaleX(0) translateZ(0)
      
    .arrow.arrow_left &
      transform-origin 100% 0

  &__line-after
    will-change transform
    transform-origin 100% 0
    transform scaleX(1) translateZ(0)
    transition transform 1s cubic-bezier(.835,-.005,.06,1)
    
    .arrow.arrow_left &
      transform-origin 0 0


.arrow:hover 
  .arrow__line-after
    transform scaleX(0) translateZ(0)
    transition transform 1s cubic-bezier(.835,-.005,.06,1) .1s

  .arrow__line-before
    opacity 1
    transition transform 1s cubic-bezier(.835,-.005,.06,1) .1s,opacity 0s 0s

.arrow.arrow_right:hover .arrow__line-before
  transform translateX(175px) scaleX(1) translateZ(0)
  
.arrow.arrow_left:hover .arrow__line-before
  transform translateX(-80px) scaleX(1) translateZ(0)


.arrow
  &__label
    position relative
    display inline-block
    vertical-align middle
    will-change transform
    transform-origin 100% 0
    transform translateX(0) translateZ(0)
    transition transform 1s cubic-bezier(.835,-.005,.06,1)
      
    .arrow.arrow_right &
      min-width 140px
      margin-right 40px

    .arrow.arrow_left &
      margin-left 40px

    .arrow:hover &
      transition transform 1s cubic-bezier(.835,-.005,.06,1) .1s
      
    .arrow.arrow_right:hover &
      transform translateX(100px) translateZ(0)
      
    .arrow.arrow_left:hover &
      transform translateX(-100px) translateZ(0)
      
  &__label-word
    font-size 13px
    text-transform uppercase
    font-weight bold
    text-decoration none
    white-space nowrap
    will-change opacity
    transition opacity .4s

    &:first-child
      transform translateZ(0)
  
  &__holder
    position relative
    overflow hidden
    display inline-block
    vertical-align middle
  
  &__end
    display inline-block
    vertical-align middle
    width 7px
    height 8px
    color currentColor
    transition fill .3s ease .3s
    
    .arrow:hover
      fill currentColor
      
  
  &__discover-in
    transform translateX(-100%) translateZ(0)
    animation maskIn 2.8s cubic-bezier(.835,-.005,.06,1) infinite backwards
    transition opacity .4s
    opacity 0
    width 100%
    height 100%
    overflow hidden
    position absolute
    top 0
    left 0
    
  &__discover-out
    transform translateX(100%) translateZ(0)
    animation maskOut 2.8s cubic-bezier(.835,-.005,.06,1) infinite backwards
    width 100%
    height 100%
    overflow hidden
    position absolute
    top 0
    left 0

