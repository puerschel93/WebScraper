#footer
  clearfix()
  padding: 40px 0
  font-family: 'open sans', 'HelveticaNeue', 'Helvetica Neue', 'Helvetica-Neue', Helvetica, Arial, sans-serif !important
  text-align: center
  background-color: white
  @media mq-normal
    text-align: left
  @media print
    display: none

.grid--no-gutters 
    margin-left: 0

.grid 
  *zoom: 1
  list-style: none
  margin: 0
  padding: 0
  margin-left: -30px

.grid--no-gutters .grid__item 
  padding-left: 0

.site-footer-item-tall
  @media mq-normal 
    margin-bottom: 15px
    height: 46px

.grid__item 
  float: left
  padding-left: 30px
  width: 100%

.list--inline
  li 
    display: inline-block
    margin-bottom: 0
    vertical-align: middle

.social-icons__item 
  padding: 0 15px

li 
  list-style: none



.social-icons 
  .icon 
    width: 23px
    height: 23px

.icon 
  display: inline-block
  width: 20px
  height: 20px
  vertical-align: middle
  fill: currentColor

.visually-hidden
  position: absolute !important
  overflow: hidden
  clip: rect(0 0 0 0)
  height: 1px
  width: 1px
  margin: -1px
  padding: 0
  border: 0

.icon__fallback-text 
  position: absolute !important
  overflow: hidden
  clip: rect(0 0 0 0)
  height: 1px
  width: 1px
  margin: -1px
  padding: 0
  border: 0

.grid--no-gutters 
  .grid__item 
    padding-left: 0

.grid__item 
  float: left
  padding-left: 30px
  width: 100%

.site-footer__copyright-content 
  font-size: 0.8125em

.social-icons 
  .icon
    @media mq-normal 
      width: 25px
      height: 25px

.site-footer__social-icons 
  @media mq-normal 
    padding-top: 7.5px
    text-align: center

.site-footer-item-align-center
  @media mq-normal  
    text-align: center

.site-footer__social-icons 
  .social-icons__link 
    color: #1f1d1d

.site-footer__copyright-content
  font-size: .8125em
  font-family: 'open sans', 'HelveticaNeue', 'Helvetica Neue', 'Helvetica-Neue', Helvetica, Arial, sans-serif !important
  font-style: normal
  line-height: 4.5
  @media mq-normal  
    line-height: 2
  a
    color: inherit
    text-decoration: none
    transition: 0.2s
    &:hover
      color: #fff

#footer-copyright
  line-height: 1.4
  @media mq-normal
    margin-bottom: 20px
  a
    font-weight: bold

#footer-links
  margin-top: 1em
  @media mq-normal
    margin-top: 0

.footer-link
  font-size: 30px
  margin-left: 20px
  &:first-child
    margin-left: 0
