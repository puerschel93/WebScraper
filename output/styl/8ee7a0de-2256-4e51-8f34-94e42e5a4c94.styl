                           $g-width*23 $g-width*5,
                           $g-width*18 $g-width*7,
                           $g-width*23 $g-width*7,
                           $g-width*18 $g-width*8,
                           $g-width*25 $g-width*8,
                           $g-width*18 $g-width*9, // I
                           $g-width*26 $g-width*2,
                           $g-width*26 $g-width*3,
                           $g-width*32 $g-width*3,
                           $g-width*27 $g-width*4,
                           $g-width*29 $g-width*5,
                           $g-width*31 $g-width*5,
                           $g-width*30 $g-width*7,
                           $g-width*32 $g-width*8,
                           $g-width*27 $g-width*9,
                           $g-width*33 $g-width*3
      mix-blend-mode: multiply

    &:after
      width: 100%
      height: 100%
      background-repeat: no-repeat
      background-image: $g-gold,
                        $g-red,
                        $g-red,
                        $g-red,
                        $g-red, // G
                        $g-gold,
                        $g-red,
                        $g-gold,
                        $g-red,
                        $g-red, // R
                        $g-gold,
                        $g-red,
                        $g-red, // I
                        $g-gold,
                        $g-gold,
                        $g-red,
                        $g-red,
                        $g-red
      background-size: $g-width*2 $g-width,
                       $g-width*2 $g-width*2,
                       $g-width*3 $g-width,
                       $g-width   $g-width,
                       $g-width*4 $g-width, // G
                       $g-width*2 $g-width,
                       $g-width*2 $g-width*3,
                       $g-width   $g-width,
                       $g-width*3 $g-width,
