                           $g-width*3  $g-width*6,
                           $g-width*6  $g-width*6,
                           $g-width*8  $g-width*7,
                           $g-width*4  $g-width*8, // G
                           $g-width*11 $g-width*5,
                           $g-width*11 $g-width*6,
                           $g-width*16 $g-width*5,
                           $g-width*13 $g-width*6,
                           $g-width*16 $g-width*7, // R
                           $g-width*21 $g-width*5,
                           $g-width*21 $g-width*6,
                           $g-width*19 $g-width*8, // I
                           $g-width*27 $g-width*5,
                           $g-width*32 $g-width*5,
                           $g-width*27 $g-width*6,
                           $g-width*32 $g-width*6,
                           $g-width*27 $g-width*8
                           
      mix-blend-mode: multiply
