/*-----------------------------

Grid

-----------------------------*/

$g-width = 15px
$g-blue = linear-gradient(steelblue,steelblue)
$g-red = linear-gradient(salmon,salmon)
$g-gold = linear-gradient(gold,gold)

#grid
  background: wheat

  div
    @media (max-width: 600px)
      transform: scale(.5)

    width: $a-width*36
    height: $a-width*12
    margin-left: -(@width/2)
    margin-top: -(@height/2)
    background-image: linear-gradient(to right, transparent 14px, steelblue 14px),
                      linear-gradient(to bottom, transparent 14px, steelblue 14px)
    background-size: 15px 100%,
                     100% 15px
    border: 1px solid steelblue
    border-right: none
    border-bottom: none

    &:before
      width: 100%
      height: 100%
      background-repeat: no-repeat
      background-image: $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue, // G
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue, // R
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue, // I
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue,
                        $g-blue
      background-size: $g-width*6 $g-width,
                       $g-width   $g-width,
                       $g-width   $g-width,
                       $g-width*6 $g-width,
                       $g-width   $g-width*5,
                       $g-width   $g-width,
                       $g-width*6 $g-width,
                       $g-width*4 $g-width,
                       $g-width   $g-width*2,
                       $g-width*2 $g-width,
                       $g-width   $g-width,
                       $g-width   $g-width*6, // G
                       $g-width   $g-width*8,
                       $g-width*6 $g-width,
                       $g-width   $g-width,
                       $g-width*5 $g-width,
                       $g-width*3 $g-width,
                       $g-width   $g-width,
                       $g-width*3 $g-width,
                       $g-width   $g-width,
                       $g-width*3 $g-width,
                       $g-width   $g-width,
                       $g-width*2 $g-width,
                       $g-width   $g-width*7, // R
                       $g-width*8 $g-width,
                       $g-width   $g-width,
                       $g-width   $g-width,
                       $g-width*8 $g-width,
                       $g-width   $g-width*2,
                       $g-width   $g-width*2,
                       $g-width*3 $g-width,
                       $g-width*3 $g-width,
                       $g-width   $g-width,
                       $g-width   $g-width,
                       $g-width*8 $g-width, // I
                       $g-width*7 $g-width,
                       $g-width   $g-width*7,
                       $g-width   $g-width,
                       $g-width*5 $g-width,
                       $g-width   $g-width*3,
                       $g-width   $g-width*3,
                       $g-width   $g-width,
                       $g-width   $g-width,
                       $g-width*5 $g-width,
                       $g-width   $g-width*6
      background-position: $g-width*3  $g-width*2,
                           $g-width*3  $g-width*3,
                           $g-width*8  $g-width*3,
                           $g-width*2  $g-width*4,
                           $g-width*2  $g-width*4,
                           $g-width*3  $g-width*8,
                           $g-width*3  $g-width*9,
                           $g-width*5  $g-width*5,
                           $g-width*5  $g-width*6,
                           $g-width*6  $g-width*7,
                           $g-width*8  $g-width*8,
                           $g-width*9  $g-width*3, // G
                           $g-width*10 $g-width*2,
                           $g-width*11 $g-width*2,
                           $g-width*16 $g-width*3,
                           $g-width*11 $g-width*4,
                           $g-width*13 $g-width*5,
                           $g-width*16 $g-width*6,
                           $g-width*13 $g-width*7,
                           $g-width*13 $g-width*8,
                           $g-width*11 $g-width*9,
                           $g-width*15 $g-width*8,
                           $g-width*15 $g-width*9,
                           $g-width*17 $g-width*3, // R
                           $g-width*18 $g-width*2,
                           $g-width*18 $g-width*3,
                           $g-width*25 $g-width*3,
                           $g-width*18 $g-width*4,
