/*!-----------------------------------------------------------------
	.form - модуль форм
 -----------------------------------------------------------------*/
form
	fieldset
		min-width 0
		padding 0
		margin 0
		border 0

	legend
		display block
		width 100%
		padding 0
		margin-bottom 20px
		font-size 1.2rem
		line-height inherit
		color var(--colorBlack)
		border 0

	label
		display inline-block
		max-width 100%
		margin-bottom 5px

	input,
	textarea
		border 1px solid #555
		font-size 1rem
		font-weight 500
		padding 10px
		color var(--colorBlack)
		&:focus
			outline none
			border-color var(--colorPink)

	textarea
		resize none

