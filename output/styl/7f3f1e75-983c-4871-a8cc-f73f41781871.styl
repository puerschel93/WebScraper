.header
	height 70px
	position absolute
	width 100%
	background-color transparent
	z-index 999
	&-menu
		display none
		position absolute
		top 70px
		left 0
		right 0
		background-color celeste
		z-index 100
		text-align center
		li
		&-item
			display block
			position: relative
		a
		&-link
			display block
			padding .5rem
			color white
			text-transform uppercase
			font-weight 700
			&:hover
				color white
		.sub-menu
			display: none
			position: static
			width: 100%
			background: rgba(white, .35)
			li 
				display: block
				width: auto
			a 
				display: block
				font-weight: normal
				text-transform: capitalize;
			
	&-logo
		display block
		width 200px
		padding-top 5px
		z-index 200
		position absolute
	&-btn-menu
		position absolute
		right 15px
		top 15px
		background transparent
		border none
		font-size 2rem
		color white
		outline none

@media screen and (min-width: 1024px)			
	.header
		position absolute
		text-align center
		&-logo
			display inline-block
			position absolute
			left 48%
			width 218px
			transform translate(-35%,0)
			
		&-menu 
			display block !important
			background-color transparent
			top 10px
			
			li
			&-item
				display inline-block
				width 115px
				line-height 18px
				vertical-align middle
				&.menu-item-30 
					margin-right 90px
				&.menu-item-33
					margin-left 90px
			a
			&-link
				padding .5rem 1rem
				text-shadow: 2px 2px 3px rgba(0,0,0,.75)
				&:hover
					color celeste
					
			.sub-menu
				width: 250px
				position: absolute
				a
					&:hover
						color #000
						text-shadow: none
				
				
					
		&-btn-menu
			display none

