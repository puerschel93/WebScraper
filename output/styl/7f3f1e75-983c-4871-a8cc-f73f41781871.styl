body.home
	.featured-items
		position: relative;
		margin: -280px auto 0//130px auto 0;

.featured-items
	position: relative;
	margin: 0 auto 0//130px auto 0;
	&:after
		content: ' ';
		clear: both;
		height: 130px;
		display: block;
	li 
		width: 280px;
		height: 240px;
		//margin: 0px 0 -110px;
		color: #000;
		position: relative;
		overflow: hidden;
		//float: left;
		transition: all 0.5s;
		//margin: 0px 0 1rem;
		margin: 0 auto 1rem;
		&.link 
			.hexInner
				background: url(./img/hexback.png) no-repeat center;
				&:before
					display: none
				&:after
					font-family 'FontAwesome';
					content: "\f061";
					width: 25px;
					height: 25px;
					background-color: #FFF;
					border-radius: 15px;
					display: inline-block;
					position: absolute;
					bottom: 15px;
					left: 50%;
					margin-left: -12px;
					line-height: 24px;
				&:hover
					&:after
						animation: hexArrow 0.4s infinite;
						background-color: #64b4dc;
						color #FFF
		&.image 
			a.hexInner
				&:after
					font-family 'FontAwesome';
					content: "\f061";
					width: 25px;
					height: 25px;
					background-color: #FFF;
					border-radius: 15px;
					display: inline-block;
					position: absolute;
					bottom: 15px;
					left: 50%;
					margin-left: -12px;
					line-height: 24px;
				&:hover
					&:after
						animation: hexArrow 0.4s infinite;
						background-color: #64b4dc;
						color #FFF
			.title
				padding: 30px 50px 0;
				font-weight: 700;
				text-transform: uppercase;
				color: #FFF;
				display: block;
				font-size: 1.3em;
				position: absolute;
				bottom: 3rem;
					
		&.servesLink
		&.journeyLink 
			.title
				padding: 30px 50px 0;
				font-family: "quatro-slab";
				font-weight: 700;
				text-transform: uppercase;
				color: #000;
				display: block;
				font-size: 1.3em;
		&.quizLink
			.hexInner
				background: url(./img/hexback.png) no-repeat center;
				&:after
					background-color: celeste;
					color #FFF
				
			.title
				display: block;
				padding: 80px 50px 0;
				text-transform: uppercase;
				color: #15356d;
				font-size: 1.8rem;
				font-weight: 700;
			.subtitle
				padding: 0 60px;
				display: block;
				font-size: 1.5rem;
				font-weight: 400;
	
		.hexInner
			width: 280px;
			height: 240px;
			display: block;
			position: relative;
			text-align: center;
			transform: rotate(240deg);
			transform-origin: 140px 120px;
			&:before
				background-color: rgba(0,0,0,.35)
				content: ''
				position: absolute
				width: 100%
				height: 100%

		.hex1
		.hex2
			display: block;
			position: absolute;
			top: 0;
			left: 0;
			width: 280px;
			height: 240px;
			overflow: hidden;
			transform: rotate(60deg);
			transform-origin: 140px 120px;
	
