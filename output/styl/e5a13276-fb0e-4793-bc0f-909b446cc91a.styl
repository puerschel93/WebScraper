.calc

    &__title
        margin-top: 20px
        +below(1220px)
            margin-left: 10px
    &__form
        clearfix()
    &__left
        position: relative
        z-index 10
        size 710px auto
        padding 20px
        float left
        margin-right: 20px
        background-color #fff
        +below(1220px)
            float none
        +below(920px)
            width 100%
            box-sizing border-box
    &__right-fixed
        position: fixed
        top: 0
        left: 0
        width: 100%
    &__right
        size 430px auto
        float left
        margin-top -40px
        margin-bottom: 20px
        +below(1220px)
            position: relative!important
            float none
            margin-left: 10px
            margin-top: 20px
        +below(460px)
            width 100%
            margin-left: 0
            padding-left: 10px
            box-sizing border-box
    .fixed
        position fixed
        top 10px
        margin-left 770px
        z-index 5
        margin-top: 0!important
        float none!important
        +below(1220px)
            margin-left: 0
    .absolute
        position absolute
        bottom 0
        right 0
        margin-bottom: 0
    &__tabs-head-item
        border-top-left-radius 3px
        border-top-right-radius 3px
        background-color light_blue!important
        font 12px PantonBold!important
        color #fff!important
        text-transform: uppercase!important
        padding 12px 40px!important
    &__tabs-head-item.active
        background-color #fff!important
        color gray!important
    &__tabs
        max-width 100%!important
        margin-top: 20px
    &__tabs-box
        width 100%
        border-top-right-radius 3px
        border-bottom-right-radius 3px
        border-bottom-left-radius 3px
        padding 20px
        box-sizing border-box
    &__tabs-box-calc
        background-color transparent!important
        padding 0!important
        position: relative!important
    &__help
        width 16px!important
        height 16px!important
        margin-left: 5px
        vertical-align: middle
        cursor pointer
    &__help-popup
        display: none
        position: absolute
        top 50px
        left 0
        z-index 5
        size 100% auto
        padding 10px 20px
        box-sizing border-box
        border 1px solid orange
        background-color #fff
        border-radius 3px
    &__help-popup-format
        top 30px
    &__help-popup-txt
        font 12px PantonRegular
        color orange
    &__help-popup-pointer
        position: absolute
        top -8px
        left 122px
    &__help-popup-edition &__help-popup-pointer
        left 75px
    &__help-popup-color &__help-popup-pointer
        left 115px
    &__help-popup-paper &__help-popup-pointer
        left 80px
    &__help-popup-perforation &__help-popup-pointer
        left 133px
    &__help-popup-number &__help-popup-pointer
        left 119px
    &__help-popup-lamination &__help-popup-pointer
        left 125px
    &__help-popup-thickness &__help-popup-pointer
        left 100px
    .title-mid
        display: inline-block!important
        vertical-align: middle
    &__format
        position: relative
        padding-bottom: 20px
        border-bottom 1px solid #e7e7e9
    &__standart
        label
            margin-top: 10px
        .radio-fill-btn:first-child
            margin-right: 10px
    &__flyer
        label
            width 165px
            height 50px
            text-align: center
            margin 10px 12px 0 0
            padding-top: 7px
            box-sizing border-box
        .radio-btn:nth-child(4) > label
            margin-right: 0
    &__size
        width 346px
        height 50px
        color gray
        border 1px solid gray
        border-radius 3px
        margin-top: 10px
        vertical-align: middle
        +below(400px)
            width 96%
            height auto
    &__size-title
        font 14px PantonBold
        display: inline-block
        margin 0 25px 0 40px
    &__size-width
        width 90px!important
        margin-top: 8px
        margin-right: 5px
        +below(400px)
            margin 10px!important
    &__size-height
        width 90px!important
        margin-top: 8px
        +below(400px)
            margin 10px!important
    &__edition
        position: relative
        padding 20px 0
        border-bottom 1px solid #e7e7e9
        label
            size 64px 48px
            margin 10px 10px 0 0
            text-align: center
            padding-top: 14px
            box-sizing border-box
    &__edition-input
        width 86px!important
        margin-top: 16px
        margin-bottom: 0!important
    &__color
        position: relative
        padding 20px 0
        border-bottom 1px solid #e7e7e9
        label
            size 165px 48px
            text-align: center
            padding-top: 5px
            box-sizing border-box
            margin 10px 10px 0 0
    &__paper
        position: relative
        padding 20px 0
        border-bottom 1px solid #e7e7e9
    &__paper-wrap
        clearfix()
    &__paper-type
        width 215px
        height 190px
        overflow-y auto
        float left
        margin-top: 10px
        margin-right: 40px
        +below(765px)
            margin-right: 0
        label
            margin-bottom: 10px
    &__paper-density
        width 454px
        float left
        margin-top: -22px
        +below(765px)
            margin-top: 20px
        +below(500px)
            width 100%
        label
            size 64px 48px
            text-align: center
            padding-top: 14px
            box-sizing border-box
            margin 10px 8px 0 0
    &__paper-density-title
        font-size 18px!important
    &__perforation
        position: relative
        padding 20px 0
        border-bottom 1px solid #e7e7e9
        label
            size 165px 48px
            text-align: center
            padding-top: 14px
            box-sizing border-box
            margin 10px 10px 0 0
    &__number
        position: relative
        padding 20px 0
        border-bottom 1px solid #e7e7e9
        label
            size 164px 48px
            text-align: center
            padding-top: 14px
            box-sizing border-box
            margin 10px 10px 0 0
    &__lamination
        position: relative
        padding 20px 0
        border-bottom 1px solid #e7e7e9
        label
            size 164px 48px
            text-align: center
            padding-top: 14px
            box-sizing border-box
            margin 10px 10px 0 0
    &__thickness
        position: relative
        padding 20px 0
        label
            size 64px 48px
            text-align: center
            padding-top: 14px
            box-sizing border-box
            margin 10px 10px 0 0
    &__maket-txt
        font 14px PantonRegular
        color dark_blue
        &_bold
            font-family PantonBold
            margin 5px 0
    &__maket-list
        list-style-type disc
        margin-left: 20px
    &__maket-list-item
        font 14px PantonRegular
        color dark_blue
    &__maket-title
        font 14px PantonBold
        color gray
        text-transform: uppercase
        margin 15px 0 5px 0
    &__maket-example-title
        font 18px PantonBlack
        color dark_blue
        text-align: center
        text-transform: uppercase
        margin 30px 0
    &__maket-example-img
        display: block
        width 499px!important
        margin 0 auto
        margin-bottom: 20px
        +below(500px)
            width 100%!important
    &__right-info
        padding 10px 0
        border-top 1px solid #e7e7e9
        margin-top: 10px
    &__right-info-item
        margin 5px 0
    &__right-info-title
        display: inline-block
        width: 205px
        font: 14px PantonBold
        color: dark_blue
    &__right-info-value
        font: 14px PantonRegular
        color: dark_blue
    &__right-cost
        padding 10px 0
        border-top 1px solid #e7e7e9
    &__right-cost-one
        margin 5px 0
    &__right-cost-one-title
        display: inline-block
        width: 205px
        font: 18px PantonRegular
        color: dark_blue
    &__right-cost-one-value
        font: 18px PantonBold
        color: dark_blue
    &__right-cost-all
        margin 5px 0
    &__right-cost-all-title
        display: inline-block
        width: 205px
        font: 18px PantonBold
        color: dark_blue
        text-transform: uppercase
    &__right-cost-all-value
        font: 24px PantonBold
        color orange
    &__right-upload
        padding 10px 0
        border-top 1px solid #e7e7e9
    &__right-time
        font 14px PantonRegular
        color dark_blue
        margin-bottom: 10px
    &__right-order-btn
        display: inline-block!important
        width 236px!important
        height 42px!important
        margin-right: 10px!important
        margin-top: 5px!important
    &__right-cancel-btn
        display: inline-block!important
        width 173px!important
        height 42px!important
        text-transform: uppercase
        margin-top: 5px!important
        +below(450px)
            margin-top: 20px!important
        &:hover
            background-color #fff!important
            color dark_blue!important
    &__right-desc
        font 14px PantonRegular
        color gray
        margin-top: 20px
    &__upload
        margin-top: 10px
        +below(768px)
            display: none
    &__upload-status
        font 14px PantonBold
        color gray
    &__upload-btn input[type="file"]
        display: none
    &__upload-btn
        display: inline-block
        font 14px PantonRegular
        color light_blue
        text-decoration: underline
        margin-left: 5px
        cursor pointer