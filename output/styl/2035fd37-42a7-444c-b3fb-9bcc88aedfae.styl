//hide autofill Safari icons in input fields
input::-webkit-contacts-auto-fill-button {
  visibility: hidden;
  display: none !important;
  pointer-events: none;
  position: absolute;
  right: 0;
}
input::-webkit-credentials-auto-fill-button {
  visibility: hidden;
  display: none !important;
  pointer-events: none;
  position: absolute;
  right: 0;
}

.btn{
  text-transform: uppercase;
  font-size: 1rem;
}

.btn-primary{
  background-color: $green;
  border-radius: 0;
  font-weight: 600;
  padding: 15px 30px;
   transition: 0.3s;
   -webkit-backface-visibility: hidden;
   border: 2px solid $green!important;
  &:hover{
    background-color: $color_hover;
    transform: scale(1.02);
  }
  &:focus{
    outline: none
    background-color: $color_hover;
    color: white;
    box-shadow: none;
    border: 2px solid $green!important;
    outline: none;
  }
  &:active{
    outline: none
    background-color: $color_hover!important;
    color: white;
    box-shadow: none!important;
    border: 2px solid $gree!important;
    outline: none;
  }
}


