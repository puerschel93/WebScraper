.sdg-arrow{
  &:after{
    content: '';
    position: absolute;
    width: 18px;
    height: 18px;
    background: url(/wp-content/themes/dist/img/icons/arrow.svg) no-repeat center;
  }  
}

.card-item {
  i.sdg-icon.sdg-arrow {
      //border-radius: 50%;
      width: 30px;
      height: 30px;
      background: $fadedPrimary;
      float: right;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: 0.3s;
      transform: scale(0.9);
  }  
  &:hover{
    
     i.sdg-icon.sdg-arrow {
        transform: scale(1);
        background: $green;
         &:after{
          content: '';
          position: absolute;
          width: 18px;
          height: 18px;
          filter: brightness(7);
          background: url(/wp-content/themes/dist/img/icons/arrow.svg) no-repeat center;
        }  
        
     }
  }
}

.select-group{
  appearance none;
  position relative;
  select {
    border: none ;
    padding: 15px;
    padding-left: 0;
    padding-right: 35px;
    background: none ;
    border-bottom: 2px solid $green;
    color: white;
    width: 100%;
    &:focus{
      outline: none 
    }
  }
  &::after{
    content: '';
    background-image: url("/wp-content/themes/dist/img/arrow-down.svg");
    background-size: contain;
    background-position: center;
    width: 20px;
    height: 20px;
    position: absolute;
    pointer-events: none;
    right: 10px;
    top: 40px;
  }
}