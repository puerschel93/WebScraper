@import url(../assets/fonts/clearsans.css)
tabletWidth = 720px
desktopWidth = 1200px

.intro-section
    height 100vh
    min-height 500px
    position relative
    // overflow hidden

    .intro-section__mist
        position absolute
        height 90%
        width 100%
        background: linear-gradient(180deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0))
        opacity: 0.8;
        @media screen and ( min-width: tabletWidth)
            opacity: 1;
        @media screen and ( min-width: desktopWidth)
            display none

    .intro-section__left-desktop-mist
        display none
        background-color: rgb(255, 255, 255);
        opacity: 0.302;
        position: absolute;
        left 0px
        height 340%
        min-height 3300px
        width 100%
        transform rotate(25deg) translateX( calc(-97%)) translateY(0%)
        @media screen and ( min-width: desktopWidth)
            display block

    .intro-section__right-desktop-mist
        display none
        background-color: rgb(39, 43, 46);
        opacity: 0.149;
        position: absolute;
        right 0px
        height 280%
        min-height 2400px
        width 100%
        min-width 2000px
        transform rotate(25deg) translateX( calc(53%)) translateY(-50%)
        @media screen and ( min-width: desktopWidth)
            display block

    .intro-content
        position relative
        height 100%
        padding 80px 30px
        padding-top 300px
        box-sizing border-box
        display flex
        flex-direction column
        align-items center
        @media screen and ( min-width: desktopWidth)
            padding 80px 100px
            align-items stretch

        .intro-content__description
            display flex
            span
                font-family: 'Clear Sans', arial
                color #676b6d
                font-size 30px
                // font-stretch semi-condensed
                line-height 40px
                text-align center
                max-width 420px
            @media screen and ( min-width: tabletWidth)
                span
                    font-size 42px
                    line-height 52px
                    max-width 450px
            @media screen and ( min-width: desktopWidth)
                justify-content flex-end
                align-items flex-end
                height 100%
                span
                    text-align left
                    color #ffffff
                    margin-right -20px

    .intro-logo
        position absolute
        left 50%
        transform translateX(-50%)
        top: 80px;
        img 
            width 302px
        @media screen and ( min-width: tabletWidth)
            img 
                width 432px
        @media screen and ( min-width: desktopWidth)
            left 100px
            transform translateX(0)

    .language-changer
        position absolute
        right 30px
        top: 80px;
        .language-changer__button
            display flex
            justify-content center
            align-items center
            width 38px
            height 38px
            border 2px solid
            border-color rgb(128, 191, 68)
            color rgb(128, 191, 68)
            border-radius 50%
            cursor pointer
            background-color rgba(128, 191, 68, 0)
            transition 0.3s all ease-out

            span
                font-family: 'Clear Sans', arial
                font-size 14px

            &:hover 
                color rgb(255, 255, 255)
                background-color rgba(128, 191, 68, 1)

            @media screen and ( min-width: desktopWidth)
                border-color rgb(255, 255, 255)
                color rgb(255, 255, 255)
                &:hover 
                    border-color rgb(128, 191, 68)

        .language-changer__button.active
            color rgb(255, 255, 255)
            background-color rgba(128, 191, 68, 1)
            @media screen and ( min-width: desktopWidth)
                border-color rgb(128, 191, 68)

        .ru__button
            margin-bottom 15px



    .slider
        width 100%
        .card
            width 100%
            height 100vh
            background-image: url(../assets/mainBackground.png)
            background-position: 50% 100%
            background-repeat: no-repeat
            background-size: cover

    .slider
        position relative
        margin-left auto
        margin-right auto
        .slider-wrapper
            position relative
            overflow hidden
            .slider-items 
                display flex
                transition transform 0.6s ease
                align-items: stretch
                .slider-item 
                    display flex
                    flex-flow row wrap
                    flex 0 0 100%
                    max-width 100%
                    justify-content space-evenly
                    overflow: hidden;



    .slider-indicators
        display none

    .slider-buttons-wrapper
        position absolute
        bottom 80px
        display flex
        left 50%
        transform translateX(-50%)
        @media screen and ( min-width: desktopWidth)
            left 100px
            transform translateX(0)
        .slider-control
            display flex
            justify-content center
            align-items center
            width 48px
            height 48px
            border-radius 50%
            cursor pointer
            background-color #ffffff;
            transition 0.3s all ease-out

            .button-arrow 
                width 14px
                height 14px
                border-top 2px solid
                border-right 2px solid
                border-color #000000
                transition 0.3s all ease-out




        .slider-control:hover
            background-color #80bf44;
            .button-arrow
                border-color #ffffff

        .slider-control-prev
            margin-right 20px
            .button-arrow 
                margin-right -7px
                transform rotate(225deg)
            @media screen and ( min-width: desktopWidth)
                margin-right 15px

        .slider-control-next
            margin-left 20px
            .button-arrow 
                margin-left -7px
                transform rotate(45deg)
            @media screen and ( min-width: desktopWidth)
                margin-left 15px




