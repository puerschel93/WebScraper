@import './mixin'

darkColor= #1F1F1F
lightColor= #F2F2F2

.stack > *:not(.active) 
  display: none

ul 
  list-style: none

.content
  width: 1170px
  margin-left: auto;
  margin-right: auto;
  height: 100%

a
  color : white
  text-decoration: none

html,body
  background-color: lightColor
  font-family: "Merriweather"
  width: 100%
  height: 100%
  padding: 0px
  margin: 0px
  #headerController 
    width: 100%
    background-color: darkColor
    height: 200px
    padding: 0px
    margin: 0px
    color: white 
    background-repeat: no-repeat
    background-position: top center
    position: relative 

    .content 
      border-box()
      padding: 63px 83px 63px 83px
      position: relative 
      z-index: 0
      .hackInfo
        position: absolute 
        bottom: 50px
        left: 80px
        h1
          font-size: 40px
          margin-bottom: 0px
          padding-bottom: 0px
          font-weight: 200
          text-shadow: 0px 1px 2px rgba(0, 0, 0, .2);
        p
          font-size: 14px
          margin: 0px
          padding: 0px
          font-family: "Open Sans"
          font-weight: 600
        img
          position: relative
          top: 6px
          left: 10px
      .left 
        float:left 
      .right
        float:right
        margin-top: 15px
        .twitterLogo
          width: 25px
      .nav
        font-family: "Open Sans"
        display: inline-block
        vertical-align: middle
        font-weight: 700
        margin-right: 20px
        font-size: 12px
        text-shadow: 0px 1px 2px rgba(0, 0, 0, .2);
      .hackDayLogo
        width: 45px

    .bottom
      background-color: lightColor
      width: 1170px
      height: 25px
      position: relative
      top: -25px
      margin-left: auto
      margin-right: auto
      


