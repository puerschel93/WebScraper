.warning_popup
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  z-index 4
  background-color rgba(0, 0, 0, 0)
  animation form-background 0.3s forwards
  *
    box-sizing border-box
  .warning_body
    position relative
    width 80%
    max-width 500px
    display flex
    justify-content center
    min-height 19.25rem
    background-color var(--white-color)
    padding 2rem 1rem 1rem
    border-radius 1rem
    box-shadow 0 3px 20px 0 rgba(41, 41, 204, 0.2)
    animation show_send_link_popup 0.3s
    .close_popup_btn
      padding 0.75rem
      border none
      outline none
      background-color transparent
      position absolute
      top 0
    .warning_info
      display flex
      align-items center
      flex-direction column
      justify-content space-between
      width 100%
      .common_circle
        width 5rem
        height 5rem
        margin 0 auto
        display flex
        align-items center
        justify-content center
        border-radius 50%
        background-image linear-gradient(137deg, #ff55a2 15%, #981f57 85%)
      .warning_text
        text-align center
        padding 1rem 1.5rem 2rem
        font-size 1rem
        line-height 1.35
        color var(--active-color)
        white-space pre-line
      .cancel_warning_popup
        width 100%
        border none
        min-height 3rem
        display flex
        align-items center
        justify-content center
        outline none
        font-size 0.75rem
        font-weight 500
        color var(--white-color)
        background-color var(--dark-color)
        border-radius 0.5rem
        text-transform uppercase
  @keyframes hide-body
    0%
      transform scale(1)
    100%
      transform scale(0)
  .hide-body
    animation hide-body 0.3s forwards
.hide-background
  animation hide-background 0.3s forwards
.sms-modifier
  .warning_body
    .warning_info
      .common_circle
        background-image linear-gradient(180deg,#7534f8,#4f2da7)
      .warning_text
        color var(--main-color)
@keyframes show_send_link_popup
  0%
    transform scale(0)
@keyframes form-background
  0%
    background-color rgba(0, 0, 0, 0)
  100%
    background-color rgba(0, 0, 0, 0.3)
body[style="direction: rtl;"], body[dir="rtl"]
  .warning_body
    .close_popup_btn
      left 0
body[style="direction: ltr;"], body[dir="ltr"]
  .warning_body
    .close_popup_btn
      right 0
