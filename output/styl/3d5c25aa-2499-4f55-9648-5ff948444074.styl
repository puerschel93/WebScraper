@import 'nib'

html
  position relative
  min-height 100%

body
  font-family 'Open Sans',serif;
  font-size 16px
  background #faf9f6
  margin-bottom 120px
  overflow-y scroll

.h2, h2
  font-size 2.15em

.h3, h3
  font-size 1.715em

.h4, h4
  font-size 1.285em

.panel-title
  font-size 1.15em

.form-control
  font-size 1em

.no-padding
  padding 0 !important
  
.page-header
  margin-top 15px
  padding-bottom 0
  border-bottom 0
  
  h1
    margin-top 0
    font-size 2.15em

abbr[title]
  text-decoration none
    
.checkbox-group
  overflow: hidden
  padding 6px 12px
  border 1px solid #ccc
  border-radius 4px
  background white
  
  .checkbox
    float: left
    clear: both
    margin 0
    
    input[type=checkbox]
      position: absolute
      left: -9999px
    
    label
      position relative
      cursor pointer
      padding 0
      font-size 1em
      font-weight 400

    input[type=checkbox] + label:before
      content: ""
      display: inline-block
      vertical-align: top
      margin-top: 3px
      margin-left: 2px
      width: 12px
      height: 12px
      border-radius: 2px
      box-shadow: 0 0 0 2px #939393
      margin-right: 8px
      
    input[type=checkbox]:not(:checked) + label:before
      background: #fff
      
    input[type=checkbox]:checked + label:before
      background #939393
      
  .checkbox + .checkbox
    margin-top 3px

  .btn-config
    display block
    clear both
    outline 0 !important
    padding-top 3px

.thumbnail-preview
  margin-bottom 10px

  .img-remove
    display inline-block
    padding 3px 3px 0
    

// HEADER
// ==============================    
#page-loader
  background-color rgba(255,255,255,0.8)
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 9999
  display none
  opacity 0
  transition 0.3s opacity ease-in
  
  .loader
    size 120px
    display inline-block
    position absolute
    top calc(50% - 60px)
    left calc(50% - 60px)
      
  &.active
    display block
    opacity 1

.navbar-default
  background white

.navbar-brand
  height auto
  padding-top 10px
  padding-bottom 10px

@media (min-width: 768px)
  .navbar-nav > li > a
    padding-top 25px
    padding-bottom 25px

  .navbar-nav > li > p
    font-size 0.85em
    font-weight 500
    line-height 20px
    margin-top 25px
    margin-bottom 25px

#page-nav + #page-welcome
  margin-top -20px
  margin-bottom 20px

#page-nav .navbar-right
  margin-right 0

#page-welcome
  display none
  padding 15px
  background lightyellow
  border-bottom 1px solid #eee
  color lighten(#29412D, 20%)
  box-shadow inset 0 3px 6px -3px rgba(0,0,0,0.2)

  &.visible
    display block
    animation hideWelcomeMessage 1s forwards cubic-bezier(0.77, 0, 0.175, 1) 5s;

@keyframes hideWelcomeMessage {
  to {
    margin-top -71px
    opacity 0
  }
}


// BODY
// ==============================
#page-wrapper
  padding-bottom 50px


// FORMS
// ==============================
.btn
  border-radius 2px
  font-size 0.85em
  font-weight 400
  text-transform uppercase

.input-group-btn > .btn
  height 34px
  font-size 12px

.panel-form
  box-shadow 0 1px 3px 0 rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 2px 1px -1px rgba(0,0,0,.12)

  > .panel-heading
    padding 18px 20px 5px

    .panel-title
      font-size 1.285em
      font-weight 500

  > .panel-body
    padding 20px 20px 30px

  .table>thead>tr>th:first-child,
  .table>tbody>tr>th:first-child,
  .table>tbody>tr>td:first-child
    padding-left 20px

  .table>thead>tr>th:last-child,
  .table>tbody>tr>td:last-child
    padding-right 20px

  .table ul
    margin-bottom 0

  .VueTables .VuePagination
    padding-left 20px
    padding-right 20px

.VueTables
  .form-group
    margin-bottom 0
    padding 5px

    label
      margin-right 10px

.form-group label
  font-size 0.9em
  font-weight 500

.checkbox label, .radio label
  font-size 1em
  font-weight 400


// TABLES
// ==============================
.table
  thead th
    font-size 0.925em

  .col-tipo
    width 200px

  td.col-protocolo
    width 140px

  .col-data
    width 130px

  .col-situacao
    width 120px

  .col-anexos
    width 100px
    white-space nowrap
    text-align center

  .col-actions
    width 1%
    white-space nowrap
    text-align right

.VueTables
  .VuePagination
    overflow hidden
    padding-bottom 15px

    p
      margin-bottom 0
      padding-top 3px
      padding-bottom 3px

    .pagination
      float right
      margin 0

      >li>a, >li>span
        padding-top 3px
        padding-bottom 3px

.label-situacao
  font-weight normal
  font-size 0.85em
  text-shadow 1px 1px 1px rgba(0,0,0,0.2)

#table-relatorio
  table.table
    margin-bottom 0

  .VuePagination
    display none


// SUMMERNOTE
// ==============================
.note-editor.note-frame
  border-color #ccc

.note-editor .note-editing-area .note-editable
  font-family Georgia,Times,Times New Roman,serif


// MODAL CATEGORIAS
// ==============================
.modal-categorias
  .table
    margin-bottom 0

    tr td:first-child
      padding-left 20px

    tr td:last-child
      padding-right 20px

  .modal-body
    padding-bottom 20px


// PANEL NOTICIA
// ==============================
.panel-noticia
  .panel-body
    padding 30px

  .entry-title
    margin-top 0
    margin-bottom 8px

  .post-meta
    margin-bottom 15px
    font-size 0.85em
    color #777

    span
      display inline-block
      margin-right 10px

    span + span:before
      content "|"
      display inline-block
      padding-right 12px

  .img-post
    display block
    margin-left auto
    margin-right auto
    margin-bottom 15px


// FOOTER
// ==============================
#page-footer
  absolute bottom 0 left 0
  width 100%
  // height 120px
  padding 15px 0
  background-color #303440
  color white

  .navbar-nav
    margin-top 35px

    > li
      float none
      display inline-block
      vertical-align top

    > li + li:before
      content "|"
      display inline-block
      vertical-align top
      margin-right 12px
      opacity 0.4

    > li > a
      display inline-block
      padding 0
      margin-right 10px
      background none !important
      color white
      font-weight 300

      &:hover, &:focus
        text-decoration underline

  .navbar-right
    > li + li:before
      margin-right 0
      margin-left 10px

    > li > a
      margin-right 0
      margin-left 12px

#footer-copyright
  font-weight 300
  margin-bottom 0
  margin-top 20px
  margin-bottom 5px

  + .nav
    margin-top 6px
  
.d-none
  display none

@media (min-width: 992px)
  .text-lg-left 
    text-align left!important
  .d-lg-block
    display block!important

#footer-developer
  text-align center

  span
    display block
    font-size 0.7em
    font-weight 400
    margin-bottom 3px
    opacity 0.9


// PRINT
// ==============================
@media print
  #page-footer
    display none
    visibility hidden

.accordion-arquivos
  margin-top 15px

  .panel-heading
    padding 0
    display flex
    align-items center
    justify-content space-between

    .item-actions
        display flex
        a
          color inherit
          cursor pointer
          &.item-editar:before
            content "\f044"
            font-family 'FontAwesome'
            font-weight 400
            display inline-block
            vertical-align top
            // margin-top -2px
            margin-right 6px
          &.item-excluir:before
            content "\f1f8"
            font-family 'FontAwesome'
            font-weight 400
            display inline-block
            vertical-align top
            // margin-top -2px
            margin-right 6px

    a
      display block
      padding 10px 15px
      text-decoration none !important

      &:before
        content "\f077"
        font-family 'FontAwesome'
        font-weight 900
        display inline-block
        vertical-align top
        margin-top -2px
        margin-right 8px

      &.collapsed:before
        content "\f078"
        color #BBB

  ul
    margin 0

  .panel-parent
    border-color #555

    > .panel-heading
      background-color #555
      color white
      display flex
      align-items center
      justify-content space-between

      .panel-title
        text-transform capitalize

    > .panel-collapse
      background #f5f5f5

    .panel
      border-radius 0
      border 0
      background none

      .panel-heading
        border-radius 0

      .panel-title
        font-size 1em

  .panel-processo
    padding-left 20px

    > .panel-collapse
      padding-left 35px

  .category-title
    display block
    padding 5px 0
    color $color-text
    text-decoration none

    &:before
      content "\f077"
      font-family 'FontAwesome'
      font-weight 900
      display inline-block
      vertical-align top
      margin-top -2px
      margin-right 5px

    &.collapsed:before
      content "\f078"
      color #BBB

    h4
      margin 0
      font-size 1em
      display inline-block
      vertical-align top

      span
        letter-spacing 0.02em

  .category-content p
    display block
    padding 5px 0 10px 20px
    margin 0

.bg-white
  background #fff

.pad
  padding 6px 10px

.entry-content.pagina
  overflow-x: auto
  img
    max-width unset

.note-icon-audio
  svg
    vertical-align middle

.get-and-preview
  width 100%
  margin 0 0 10px
  float left
  clear both

  .btn
    float left
  
  .icon-preview
    float left
    width 55px
    height 55px
    margin 0 15px 0 0
    border-radius 5px
    background #fff
    text-align center
    font-size 30px
    line-height 55px
    color #1e1e1e
