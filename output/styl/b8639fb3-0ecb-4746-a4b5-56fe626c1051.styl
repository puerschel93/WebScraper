honeycombBackground(){
    inside = #fb1;
    border = #B71;
    background:
    radial-gradient(circle farthest-side at 0% 50%,inside 23.5%,rgba(240,166,17,0) 0)21px 30px,
    radial-gradient(circle farthest-side at 0% 50%,border 24%,rgba(240,166,17,0) 0)19px 30px,
    linear-gradient(inside 14%,rgba(240,166,17,0) 0, rgba(240,166,17,0) 85%,inside 0)0 0,
    linear-gradient(150deg,inside 24%,border 0,border 26%,rgba(240,166,17,0) 0,rgba(240,166,17,0) 74%,border 0,border 76%,inside 0)0 0,
    linear-gradient(30deg,inside 24%,border 0,border 26%,rgba(240,166,17,0) 0,rgba(240,166,17,0) 74%,border 0,border 76%,inside 0)0 0,
    linear-gradient(90deg,border 2%,inside 0,inside 98%,border 0%)0 0 inside;
    background-size:40px 60px;
}

paperBackground(){
    background-color: #fff;
    background:
        linear-gradient(90deg,transparent 9px,#abced4 9px,#abced4 11px,transparent 11px),
        linear-gradient(#8693c3 .1em, transparent .1em);
    background-size: 100% 1em;
}

brightSquaresBackground(){
    background-color: #404040;
    background-image: url(/images/bright-squares.png);
    color: white;
}

gridBackground(){
    background-color: rgba(49, 49, 49, 0.8);
    background-image: linear-gradient(0deg, transparent 24%, rgba(255, 255, 255, .05) 25%, rgba(255, 255, 255, .05) 26%, transparent 27%, transparent 74%, rgba(255, 255, 255, .05) 75%, rgba(255, 255, 255, .05) 76%, transparent 77%, transparent), linear-gradient(90deg, transparent 24%, rgba(255, 255, 255, .05) 25%, rgba(255, 255, 255, .05) 26%, transparent 27%, transparent 74%, rgba(255, 255, 255, .05) 75%, rgba(255, 255, 255, .05) 76%, transparent 77%, transparent);
    background-size:50px 50px;
}
#event_page{
.plan-tab{
    height: 100%;
    overflow-y: scroll;
    background-color: #ecf0f1;


    h3{
        margin : 0;
        font-size: 1.1em;
        font-weight: 800;
    }
    .cover-photo{
        position: relative;
        width: 100%;
        height: 30%;
        img{
            height: 100%;
            width: 100%;
        }
        .edit-cover{
            position: absolute;
            top: 0.75em;
            right: 2.5em;
            font-size: 1.5em;
            border-radius: 2em;
            border: 2px solid white;
            padding: 7px;
            background-color: rgba(111, 110, 110, 0.45);
            color: #ffffff;
        }
    }
    .banner{
        position: relative;
        height: 3em;
        width: 100%;
        box-shadow: 0px -4px 15px 3px black;
        .count-down{
            position: relative;
            height: 7em;
            max-width: 7em;
            min-width: 7em;
            top: -2em;
            border: 4px solid white;
            background-color: rgb(231,76,60);
            border-radius: 7em;
            p{
                padding: 0px;
            }
        }
        .left,.right{
            text-align: center;
            font-size: x-large;
            padding-top: 7px;
        }
    }
    hr{
        border: 0;
        margin: 0;
        height: 1px;
        background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
    }
    .meta-container{
                    // meta section header

        ons-row{
            &:first-child{
                margin-top: 20px;
            }
            padding: 10px;
            .right{
                text-align: right;
                padding-top: 7px;
            }

        }
        .meta-description{

            // meta section body
            #descriptionEditor {
                margin: 0px 10px;
                width: 90%;
                max-height: 7em;
                background-color: rgba(0,0,0,0);
                border-radius: 10px;
                padding: 0 7px;
                overflow-y: auto;

                &.editable{
                    paperBackground();
                }
                &.ng-empty{
                    border: 1px dotted red;
                    box-shadow: 0px 0px 9px 0px red;
                }
                &.expand{
                    max-height:none;
                    overflow-y: auto;
                    padding-bottom: 10px;
                }
            }
            .fader{
                width: 100%;
                text-align: center;
                position: relative;
                bottom: 25px;
                display: block;
                height: 20px;
                &:before{
                    content: "";
                    height: 30px;
                    background: linear-gradient(to bottom,rgba(0,0,0,0) 0%,rgba(236,240,241,0.62) 55%,#ecf0f1 100%);
                    display: block;
                }
            }
        }

        .meta-location{
            ons-list{
                width: 100%;
                height: 100%;
                overflow-y: hidden;
                ons-list-item{
                    background: none
                    div{
                        padding: 0;
                    }
                    ons-row{
                        margin: 0;
                        padding-left: 0;
                        ons-col{
                            padding-right: 10px;
                        }
                    }
                    &:after{
                        content: "";
                        height: 2px;
                        width: 100%;
                        display: block;
                        bottom: 0;
                        position: absolute;
                        margin-bottom: 2px;
                        background: linear-gradient(to right,rgba(0,0,0,0) 0%,#44e6dc 20%,#009688 50%,#44e6dc 80%,rgba(0,0,0,0) 100%);
                    }
                }
            }
        }
    }
    //
    // DIALOG LOCATION PICKER
    //
    #location_picker{
        .dialog-mask{
            background-color: rgba(33, 33, 33, 0.77);
        }
        .dialog{
            position: absolute;
            top: 0;
            left: 0;
            right: 3.5em;
            bottom: 0px;
            transform: translate(0,0);
            margin: 5px;
            background: none
            &>div{
                height: 100%;
            }
            #here_map{
                width: 100%!important;
                height: 50%!important;
                border-radius: 40% 0 40% 0;
                gridBackground();
                margin: 0 auto;
                canvas{
                    border-radius: 40% 0 40% 0;
                }
            }
            .map-crosshair{
                position: absolute;
                width: 100%!important;
                height: 50%!important;
                top: 0;
                pointer-events: none;
            }
            svg{
                position: absolute;
                width: 50%;
                height: 25%;
                pointer-events: none;
                .map-button{
                    pointer-events: visiblePainted;
                    stroke: rgba(0, 0, 0, 0.29);
                    stroke-width: 2px;
                }
                &.close-button{
                    top: 0px;
                    fill: grey;
                }
                &.add-button{
                    right: 0;
                    top: 25%;
                    fill: #009688;
                }
            }


            .search-container{
                ons-input{
                    padding: 5px;
                    font-size: 1.5rem;
                    border-bottom: 3px solid rgba(0, 150, 136, 0.431373);
                    background-color: rgba(255, 255, 255, 0.933333);
                    position: relative;
                    border-radius: 0px 0px 10px 10px;
                    width: 97%;
                    span{
                        left: 7px;
                        top: 10px;
                        &.text-input--material__label--active{
                            display:none;
                        }
                    }
                    label{
                        width: inherit;
                    }
                    input{
                        font-size: inherit;
                    }
                }
                ons-list{
                    height: 40vh;
                    ons-list-item{
                        word-wrap: normal;
                        height: auto;
                        margin: 2px auto;
                        border-radius: 10px;
                        border: 3px solid rgba(0, 150, 136, 0.43);
                        background-color: rgba(255, 255, 255, 0.93);

                    }
                }
            }
        }
    }
}
}
.hexagon {
  position: relative;
  width: 300px;
  height: 173.21px;
  background-color: #64C7CC;
  margin: 86.60px 0;
}

.hexagon:before,
.hexagon:after {
  content: "";
  position: absolute;
  width: 0;
  border-left: 150px solid transparent;
  border-right: 150px solid transparent;
}

.hexagon:before {
  bottom: 100%;
  border-bottom: 86.60px solid #64C7CC;
}

.hexagon:after {
  top: 100%;
  width: 0;
  border-top: 86.60px solid #64C7CC;
}
