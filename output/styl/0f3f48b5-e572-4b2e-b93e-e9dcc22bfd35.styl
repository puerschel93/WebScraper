.header
    width 100%
    width 100vw
    position absolute
    z-index 2

    &__wrapper
        position relative
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        max-width 1170px
        margin: auto
        padding 40px 20px 20px
        scroll-behavior: smooth
        -webkit-overflow-scrolling: touch
        
        ul
            @media screen and (max-width: 720px)
                display none

    &__menu
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        width: 100%;
        justify-content space-around

        @media screen and (max-width: 720px)
            flex-direction column
            align-items flex-end
            justify-content unset
            width 100%

    &__item
        margin 10px 0

    &__logo
        display block
        width: 112px
        height: 55px
        background url('../assets/svg/logo-w.svg')
        background-repeat no-repeat
        background-size: contain;
        background-position 50% 100%
        position relative
        
        @media screen and (max-width: 1024px)
            height: 47px
            
        @media screen and (max-width: 720px)
            height 37px
    &__link
        position relative
        color: #fff
        font-size: 24px
        font-weight: 700
        margin-left 47px
        transition: .3s ease-in-out
        padding 10px 0
        word-wrap break-word

        @media screen and (max-width: 1160px)
            margin-left: 2vw
            
        @media screen and (max-width: 1024px)
            font-size: 16px;

        @media screen and (max-width: 720px)
            display block
            margin 40px 0
            margin: 2vh 0

        &::after
            bottom 0
            left 0
            content: " "
            width: 30px
            height: 3px
            position absolute
            background-color: transparent
            transition: .3s ease-in-out

        &:hover
            &::after
                background-color: #fff

// mob menu settings
.menu
    &-decor
        position: absolute
        display: flex
        align-items: center
        cursor: pointer
        top: 40px
        right: 20px
        padding: 5px 9px

        &__icon
            position relative
            width: 18px
            height: 18px
            z-index: 202
            padding-top: 0
            -webkit-transition: all linear .2s
            transition: all linear .2s
            border: 1px solid transparent

        &__hamburger
            display none

            @media screen and (max-width: 720px)
                display block

            span
                display: block
                position: absolute
                height: 3px
                width: 18px
                -webkit-border-radius: 100px
                border-radius: 100px
                background-color: #28ebff
                opacity: 1
                left: 0
                -webkit-transform: rotate(0deg)
                -ms-transform: rotate(0deg)
                transform: rotate(0deg)
                -webkit-transition: .2s ease-in-out
                transition: .2s ease-in-out

                &:nth-child(1)
                    display none

                &:nth-child(2),
                &:nth-child(3)
                    top: 4px

                &:nth-child(4)
                    top: 12px

.close-menu
    display none

    &__closed,
    &__opened
        display none
        color: #28ebff
        font-size: 16px
        font-weight: 700

    @media screen and (max-width: 720px)
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        margin-left 11px

        &__closed
            display block

        &__opened
            display none

