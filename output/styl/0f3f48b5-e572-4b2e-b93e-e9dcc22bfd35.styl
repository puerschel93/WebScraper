       .header__link
            @media screen and (max-width: 720px)
                color: #fff !important

    .menu-decor
        display none

        @media screen and (max-width: 720px)
            display: flex

            &__hamburger
                display block

                span

                    &:nth-child(1)
                        display: none
                        width: 0%
                        left: 50%

                    &:nth-child(2)
                        top 6px
                        -webkit-transform: rotate(45deg)
                        -ms-transform: rotate(45deg)
                        transform: rotate(45deg)

                    &:nth-child(3)
                        top 6px
                        -webkit-transform: rotate(-45deg)
                        -ms-transform: rotate(-45deg)
                        transform: rotate(-45deg)

                    &:nth-child(4)
                        display: none
                        width: 0%
                        left: 50%

    .close-menu__closed, 
    .close-menu__opened
        color #fff

    .menu-decor__hamburger span
        background-color #fff

    .close-menu
        &__closed
            display none

        &__opened
            display block

    .header__logo
        @media screen and (max-width: 720px)
            position absolute
            top 40px
            z-index 102

