.shops
  .catalog__grid-switcher {
    margin-top 20px
  }
  &__controls
    display flex
    justify-content space-between
    align-items center
    padding 60px 0
    @media (max-width: 1267px)
      justify-content flex-end
      padding 30px 0 0
    @media (max-width: 767px)
      margin-bottom -20px
  &__top
    position relative
    display flex
    justify-content space-between
    align-items center
    margin-bottom 50px
    @media (max-width: 1267px)
      margin-bottom 30px
    @media (max-width: 767px)
      display block
    .catalog__search
      @media (max-width: 767px)
        width 100%
        input
          width 100%
    div
      display flex
      align-items center
  &__list
    display flex
    margin-bottom 150px
    @media (max-width: 1680px)
      margin-bottom 100px
    @media (max-width: 1267px)
      display block
      padding-top 20px
      margin-bottom 70px
      border-top 1px solid #BDBDBD
    @media (max-width: 1023px)
      margin-bottom 50px
    @media (max-width: 767px)
      padding-top 10px
    h2
      margin 0
      width 140px
      font-size 72px
      color var(--gold)
      flex-shrink 0
      @media (max-width: 1267px)
        margin-bottom 30px
      @media (max-width: 1023px)
        margin-bottom 20px
      @media (max-width: 767px)
        font-size 48px
  &__grid
    width 100%
    display grid
    grid-template-columns 1fr 1fr 1fr 1fr
    grid-gap 50px
    @media (max-width: 1680px)
      grid-gap 30px
      grid-template-columns 1fr 1fr 1fr
    @media (max-width: 1023px)
      grid-template-columns 1fr 1fr
    @media (max-width: 767px)
      grid-template-columns 1fr
      grid-gap 20px
  &__item
    border 1px solid var(--gray4)
    color inherit
    text-decoration none
    transition .5s
    @media (max-width: 767px)
      display flex
      align-items center
      height 120px
    &:hover
      @media (hover)
        color var(--gold)
  &__img
    position relative
    border-bottom 1px solid var(--gray4)
    @media (max-width: 767px)
      border 0
      width 33.33%
    &::before
      content ''
      display block
      padding-bottom 66.66%
    img
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%,-50%)
      width: auto !important
      max-width: calc(100% - 40px) !important
      height: auto
      max-height: calc(100% - 40px)
      @media (max-width: 767px)
        max-width: calc(100% - 20px) !important
        max-height: calc(100% - 20px)
  &__text
    padding 20px
    position relative
    @media (max-width: 767px)
      width 66.66%
    h3
      font-size 18px
      margin 0
      margin-bottom 15px
      color inherit
      font-weight normal
      text-transform uppercase
      min-height 45px
      @media (max-width: 1267px)
        min-height 0
        margin-bottom 30px
      @media (max-width: 1267px)
        margin-bottom 20px
      @media (max-width: 767px)
        font-size 12px
      @media (max-width: 767px)
        font-size 18px
    h4
      font-size 12px
      color var(--gray3)
      margin 0
      text-transform uppercase
      font-family var(--text-font)
      font-weight normal
    span
      color var(--red)
      position absolute
      bottom 20px
      right 20px
      font-size 14px
      @media (max-width: 1267px)
        font-size 10px

.shops__list
  @media (max-width: 1267px)
    margin-top 50px
  &--list
    margin-bottom 30px
    .shops__grid
      margin-top 20px
      border-bottom 1px solid var(--gray4)
      grid-template-columns 1fr 1fr 1fr
      grid-gap 30px !important
      padding-bottom 50px
      @media (max-width: 1267px)
        grid-gap 20px !important
        border-bottom none
      @media (max-width: 1023px)
        grid-template-columns 1fr 1fr
      @media (max-width: 767px)
        padding-bottom 0
      .shops__item
        border 0
        height auto
      .shops__img
        display none
      .shops__text
        padding 0
        h3
          min-height 0
          font-size 24px
          margin 0
          @media (max-width: 1267px)
            font-size 20px
          @media (max-width: 767px)
            font-size 12px
        h4
          display none
        span
          bottom auto
          right auto
          left 0
          top -16px
          @media (max-width: 1267px)
            top -11px
