    font-size 1.1rem
    font-family font-stack-decorative


// Media Queries  

@media (min-width 700px)
  .headerWrap
    padding-top 3rem
  nav
    display flex
    align-items center
    gap 20px

    a
      display flex
      align-items center
      justify-content center
  .navLink 
    font-size 1.5rem
  .hamburger
    display none

  .blogPost, 
  .about, 
  .carouselDiv, 
  .blogContainer
