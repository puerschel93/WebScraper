// Require all other style sheets
@require './_*.styl'



// Header
header
  background white
  position sticky
  top 0
  width 100%
  z-index 9
.headerWrap
  display flex
  justify-content space-between
  align-items center

.title
  margin 0

// Nav
nav
  display none

nav.show
  background main-bg
  display flex
  flex-direction column
  gap 15px
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  padding 7rem 2rem 2rem

.navLink
  min-width 80px
  min-height 50px
  font-size 2rem
  font-weight 700
.navLink.navActive
  text-decoration underline accent-light

.hamburger
  width 45px
  height 45px
  position fixed
  top 28px
  right 28px
  z-index 10
  display flex
  flex-direction column
  justify-content space-around
  cursor pointer

.bar
  width 100%
  height 3px
  background-color main-text
  transition .25s all

.hamburger.hide
  .bar1
    transform translateY(30px) rotate(-405deg)

  .bar2
    background-color white
  .bar3
    transform rotate(405deg)


// About
.about
  width 95%
  max-width 600px
  margin 3rem auto 0
  padding 2rem
  display flex
  flex-direction column
  gap 20px
  h2
    text-align center
    font-size 1.9rem
  .profileImg
    display block
    width 70%
    max-width 350px
    border 2px solid black
    border-radius 50%
    box-shadow -1px 2px 2px 1px accent-light
    margin 1rem auto
  p
    line-height 1.5

// Work
.carouselDiv
  margin-top 3rem
  img
    display block
    margin auto
  h2 
    text-align center
    font-size 2rem


// Blog
// Container
.blogContainer
  display grid
  gap 20px
  grid-template-columns repeat(auto-fit, minmax(280px, 1fr))
  justify-content center
.blogContainer h2
  grid-column 1 / -1
  text-align center
  font-size 1.9rem

// Card
.blogCard
  display flex
  flex-direction column
  gap 10px
  border-radius 5px
  img
    border-radius 5px 5px 0 0
  p
    line-height 1.3
.cardLink:hover
  text-decoration none
  opacity .90
.cardLink:active
  transform none

// Pagination styles
.pagination
  width 80%
  max-width 400px
  grid-column 1 / -1
  margin 15px auto
  display flex
  list-style none
  outline none

.pagination > active > a
  background-color accent-dark
  border-color accent-dark
  color #fff

.pagination > li > a 
  border 1px solid accent-dark
  padding 5px 10px
  outline none
  cursor pointer

.pagination > .active > a,
.pagination > .active > span,
.pagination > .active > span:hover,
.pagination > .active > span:focus,
.pagination > .active > a:hover,
.pagination > .active > a:focus
  background-color accent-dark
  border-color accent-dark
  color white
  outline none

.pagination > li > a, 
.pagination > li > span
  color accent-dark

.pagination > li:first-child > a, 
.pagination > li:first-child > span, 
.pagination > li:last-child > a, 
.pagination > li:last-child > span
  border-radius unset


// Post
.blogPost
  position relative
  width 95%
  max-width 600px
  margin 3rem auto 0
  line-height 1.5
  font-size 1.1rem
  display flex
  flex-direction column
  gap 25px
  h2
    text-align center
    font-size 1.9rem
    letter-spacing .1rem
  img
    border-radius 9px
