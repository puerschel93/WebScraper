@import "_variables.styl"

body
  color $text-color
  font-size 14px

.text
  &-muted
    color #777

a
  color $anchor-color
  text-decoration none
  transition color $transition

  &:hover
  &:focus
    color darken($anchor-color, $hover-darken)
    text-decoration underline

  &.text-restore-color
    color $text-color

    &:hover
    &:focus
      color darken($text-color, $hover-darken)

.dashed
  &:hover
  &:focus
    border-bottom 1px dashed

  &:hover
  &:focus
    text-decoration none

.no-text-decoration
  text-decoration none

  &:hover
  &:focus
  &:active
    text-decoration none

h1
  font-size 36px

h2
  font-size 30px

h3
  font-size 24px

h4
  font-size 18px

h5
  font-size 14px

h6
  font-size 12px

