// 文章宽度
.page {
  & > * {
    max-width: 1160px;
  }
}
.theme-vdoing-content {
  &:not(.custom) {
    max-width: 1160px;
  }
}

.page-nav, .page-nav .inner {
  max-width: 1160px;
}

.articleInfo-wrap {
  .articleInfo {
    width: 1160px;
  }
}


.theme-vdoing-content {
  &.custom {
    img {
      border: 1px solid #ebeef5;
      box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
