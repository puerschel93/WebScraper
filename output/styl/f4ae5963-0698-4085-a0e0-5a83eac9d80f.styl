.hero
    &__container
        width: 90%;
        height: 100vh;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 5rem;
        @media screen and (min-width 767px)
            flex-direction: row;
            max-width: 980px;
            justify-content: space-between;
    &-text
        @media screen and (min-width 767px)
            flex: 1;
            max-width: 500px;
        &__title
            font-size: 4rem;
            color: #314584;
            font-weight: 600;
            @media screen and (min-width 767px)
                font-size: 6rem;
                line-height: 1.4;
        &__description
            font-size: 1rem;
            color: #6e757a;
            line-height: 1.5;
            margin-bottom: 3rem
            @media screen and (min-width 767px)
                font-size: 1.6rem;
                margin-bottom: 5rem
        &__links
            margin-bottom: 3rem;
        &__link
            color: #314584;
            line-height: 1.5;
            font-size: 1rem;
            font-weight: 600;
            margin-right: 3rem;
            cursor: pointer;
            @media screen and (min-width 767px)
                font-size: 1.5rem;
        &__link.active
            padding: 1.4rem 3rem;
            border-radius: 25px;
            filter: drop-shadow(0px 5px 5px rgba(255,57,70,0.15));
            background-color: #ff3946;
            color: #fff;
            line-height: 1.5;
            font-size: 1rem;
            font-weight: 600;
            margin-right: 3rem;
            cursor: pointer;
            @media screen and (min-width 767px)
                font-size: 1.5rem;
    &__image
        position: relative;
        display: block;
        @media screen and (min-width 767px)
            flex: 1;
            position: relative;
        img
            width: 100%;
            position: relative;
            top: 0;
            bottom: 0;
            right: -2rem;
            transition 1s width ease;
            &.hidden
                z-index: 5;
                width: 0;
            @media screen and (min-width 767px)
                height: 65vh;
                width: auto;
                right: -15rem;
                position: relative;