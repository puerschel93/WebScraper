.button
  background $back
  color $fore 
  align-items center 
  justify-content center
  cursor pointer
  line-height $spacer * 5
  display inline-block
  padding 0 $spacer * 2
  border-radius $spacer * 0.5
  text-decoration none
  border 1px solid $mid
  height $spacer * 5

  &.primary
    background $primary
    color $back

    &[disabled]
      background $mid


  &.danger
    background $danger
    color $back

  & + .button
    margin-left $spacer

  &:not([disabled]):hover
    background $hover
    color $back

  &[disabled]
    color $dark
    cursor not-allowed

  &.icon-button
    color $dark
    line-height $spacer * 4
    width $spacer * 4
    height $spacer * 4
    padding 0
    font-size $spacer * 3
    display flex
    align-items center
    justify-content center

.text-button
  line-height $spacer * 5
  text-decoration none

  & + .button
    margin-left $spacer * 2

  &:not(.disabled):hover
    text-decoration underline