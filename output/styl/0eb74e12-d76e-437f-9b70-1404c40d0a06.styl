.calculator-container
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column;
    
.card-container
    .calculator-container
        +media-lg()
            margin-bottom: 160px
.calculator
    width: 100%
    +media-lg()
        border-radius: 2px;
        box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.08);
        border: solid 1px #ebebeb;
        background-color: $white;

.calculator-form
    padding: 40px 20px 0;
    display: flex
    flex-direction: column
    width: 100%
    +media-lg()
        flex-direction: row
        padding: 40px 20px 56px;

.calculator-item
    flex: 1
    margin-right: 20px
    width: 100%
    margin-bottom: 20px
    +media-lg()
        margin-bottom: 0
    +media-xxl()
        min-width: 327px
    &:last-child
        margin-right: 0
    label
        font-size: 16px;
        font-weight: 500;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        color: $black;
        display: block
        margin-bottom: 15px

.calculator-form-item
    position relative
    select, input
        width: 100%
        border-radius: 2px;
        border: solid 1px #d4d4d4;
        background-color: $white;
        height: 48px
        padding: 0 20px;
        font-size: 16px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        color: #222327;
        -webkit-appearance: none;
        appearance:none;
    input
        padding-right: 40px
    .price-tag
        position: absolute
        right: 16px
        top: 14px
        font-size: 16px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        color: $grey;

.calculator-result
    border-top: 1px solid #e5e5e5;
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    flex-direction: column;
    padding: 30px 0
    +media-lg()
        flex-direction: row
    > div
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        margin-bottom: 12px
        +media-lg()
            flex: 1
            margin-bottom: 0
    h3
        font-size: 17px;
        font-weight: 500;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.41;
        letter-spacing: normal;
        color: #222327;
        margin-bottom: 8px

.calculated-point
    font-size: 24px;
    font-weight: 500;
    font-stretch: normal;
    font-style: normal;
    line-height: 1;
    letter-spacing: normal;
    text-align: center;
    color: #222327;

.calculator-payment-plan-container
    width: 100%
    text-align: center;
    margin-top: 48px

.calculator-payment-plan
    width: 100%
    padding-top: 40px
    padding-bottom: 40px
    +media-lg()
        padding-top: 87px
    h2
        font-size: 36px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        text-align: center;
        color: $black;
        margin-bottom: 17px
        font-family: 'Bebas Neue';
    blockquote
        font-size: 18px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        text-align: left
        color: #7f7f7f;
        display: block
        margin-top: 24px
    table
        width: 1170px
        border: 0 none;
        tr
            th
                font-size: 20px;
                font-weight: 500;
                font-stretch: normal;
                font-style: normal;
                line-height: normal;
                letter-spacing: normal;
                color: $primaryblack;
                text-align: left;
                padding-top: 23px
                padding-bottom: 23px
                border: 0 none;
                border-bottom: 1px solid #e5e5e5
            td
                font-size: 20px;
                font-weight: normal;
                font-stretch: normal;
                font-style: normal;
                line-height: normal;
                letter-spacing: normal;
                text-align: left;
                color: $primaryblack;
                padding-top: 23px
                padding-bottom: 23px
                border: 0 none;
                border-bottom: 1px solid #e5e5e5
                &:first-child
                    padding-left: 30px
            &:last-child
                td
                    font-weight: bold
                    padding-left: 0

.calculator-payment-plan-scroll
    width: 100%
    overflow-x: auto