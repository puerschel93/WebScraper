.header
  &__placeholder
    height: 182px
    +media('md')
      height: 80px

  &__container
    position: absolute;
    left: 0
    top: 0
    width: 100%

  &__top, &__bottom
    background: #ffffff

    & .c
      height: 100%
      display: flex;
      align-items center
      //align-items flex-start
      justify-content space-between

  &__top
    padding-top: 43px
    +media('md')
      height: 80px
      padding: 0
      position: fixed;
      top: 0
      left: 0
      width: 100%
      box-shadow 0 9px 24px rgba($black, .13)
      z-index: 10

  &__logo
    border: 0

    &--lg
      +media('md')
        display: none;

    &--sm
      display: none;
      +media('md')
        display: block;

  &__phone
    color: $black
    font-size: 24px
    font-weight: 500
    border: 0
    +media('md')
      font-size: 16px
      //padding-bottom: 5px
      border-bottom: 1px solid $brown1;

    svg
      width: 24px
      height: 24px
      fill $brown2
      display: inline-block;
      vertical-align: middle;
      margin-right: 10px;
      margin-top: -4px;
      +media('md')
        display: none;

  &__socials
    display: flex;

    &--lg
      +media('lg')
        display: none;

    &--sm
      display: none;
      +media('md')
        display: flex;
        flex-wrap wrap
        margin: 10px 0 0;
        width: 100%

  &__social
    padding: 5px
    display: flex;
    min-width: 50%
    flex: 1


  &__button
    display: block;
    text-align: center;
    margin-left: 10px
    padding: 16px 26px
    background: $grey2
    font-size: 10px
    font-weight: 500
    letter-spacing .3em
    color: $black
    border: 0
    anim()

    +media('md')
      background: $brown2
      color: $white
      margin: 0
      width: 100%
      padding-left: 0
      padding-right: 0

    &:hover
      color: $brown1

    &:active
      background: $grey1

  &__bottom
    position: relative;
    z-index: 10
    anim()

    .c
      height: 70px

    &--fixed
      position: fixed;
      top: 0
      left: 0
      width: 100%
      box-shadow 0 9px 24px rgba($black, .13)

    +media('md')
      height: auto;
      position: fixed;
      background: $grey2
      top: 80px
      bottom: 0
      left: 0
      width: 100%
      opacity: 0
      pointer-events none
      visibility hidden
      transform translateY(-20px)
      overflow: auto;

      &--active
        opacity: 1
        visibility: visible;
        pointer-events all
        transform none

      &--fixed
        top: 80px

      .c
        padding-top: 40px
        flex-direction column
        justify-content flex-start
        align-items center

  &__menu
    +media('lg')
      width: 100%
    +media('md')
      width: auto;

    ul
      margin: 0
      padding: 0
      display: flex;
      align-items center
      list-style none
      +media('lg')
        justify-content space-between
      +media('md')
        flex-direction column

    li
      padding: 0
      margin: 0 38px 0 0
      +media('lg')
        margin-right: 0px
      +media('md')
        width: 100%
        margin-bottom: 23px

      &:before
        display: none;

      &:last-child
        margin-right: 0
        margin-bottom: 0

    a
      color: $black
      font-weight: 500
      anim()
      border: 0
      +media('md')
        position: relative;
        font-size: 16px
        padding-bottom: 2px
        border-bottom: 1px solid #d6c1ae

      &:hover
        color: $brown1

    svg
      transform rotate(-90deg)
      width: 10px
      height: 10px
      fill $brown1
      margin-right: 12px
      +media('md')
        position: absolute;
        left: 100%
        transform rotate(180deg)
        top: 6px
        margin-left: 8px

  &__callback
    margin-left: 40px
    +media('lg')
      display: none;

  &__menu-button
    display: none;
    +media('md')
      display: block;
      width: 40px
      height: 40px
      border: 2px solid $brown2
      position: relative;
      anim()

      &:hover
        border-color: $brown1

      svg
        width: 18px
        height: 18px
        fill: $black
        position: absolute;
        top: 50%
        left: 50%
        margin-top: -9px
        margin-left: -9px

  &__submenu
    visibility: hidden;
    opacity: 0
    pointer-events none
    transform translateY(-20px)
    position: absolute;
    top: 100%
    left: 0;
    width: 100%
    background: $grey2
    anim(.2s)
    +media('md')
      position: fixed;
      top: 70px
      left: 0
      bottom: 0
      right: 0
      transform translateX(100%)
      anim(.3s)
      overflow: auto;

    & .c
      height: auto;
      display: block;

    &--active
      visibility: visible;
      opacity: 1
      pointer-events all
      transform none
      +media('md')
        transform none

  &__projects
    padding: 25px 0
    margin: 0 -15px
    display: flex;
    flex-wrap wrap
    justify-content flex-start
    +media('md')
      padding: 0

  &__project
    padding: 15px
    width: 33.3333%
    +media('lg')
      width: 50%
    +media('md')
      width: 100%

    a
      display: block;
      position: relative;
      width: 100%
      height: 210px
      background-size: cover
      background-position: 50% 50%
      border: 0

      &:before, &:after
        content: ''
        position: absolute;
        left: 0
        top: 0
        width: 100%
        height: 100%
        anim()

      &:before
        background: linear-gradient(to top, #2b1f1f, rgba(#2b1f1f, 0) 50%);

      &:after
        background: linear-gradient(to top, #2b1f1f, rgba(#2b1f1f, 0) 100%);
        opacity: 0

      &:hover
        &:after
          opacity: 1

    span
      position: absolute;
      color: $white
      font-size: 18px
      font-weight: 600
      bottom: 22px
      left: 29px
      right: 29px
      z-index: 1;

  &__services
    padding: 52px 0 64px
    +media('md')
      padding: 15px 0
      display: flex;
      flex-direction column
      align-items center


    ul
      padding: 0
      margin: 0
      list-style none

    li
      margin: 0
      padding: 0

      &:before
        display: none;

    > ul
      display: flex;
      justify-content space-between
      +media('md')
        flex-direction column

      > li
        +media('md')
          margin-bottom: 15px

      > li > ul > li
        margin-bottom: 25px
        +media('md')
          margin-bottom: 15px

        &:last-child
          margin-bottom: 0

  &__back
    display: none;
    position: absolute;
    top: 14px
    left: 20px
    font-size: 14px
    color: $brown1
    +media('md')
      display: block;

    svg
      fill: $brown1
      width: 16px;
      height: 16px;
      vertical-align: top;
      margin-right: 6px;
      margin-top: 5px;

  &__aside
    display: flex;
    +media('md')
      display: none;

  &__menu-search
    position: relative;
    width: 48px
    height: 48px
    border: 2px solid #f8f6f5;
    margin-left: 10px
    anim()

    &:hover
      border-color: $brown2

    svg
      width: 20px
      height: 20px
      fill $brown1
      position: absolute;
      left: 50%
      top: 50%
      margin-top: -10px
      margin-left: -10px

    &--sm
      display: none;
      border-color #efebe8
      width: calc(100% - 10px)
      flex-shrink 0
      margin: 0
      text-align: center;
      font-size: 8px
      letter-spacing .3em
      margin-top: 39px
      color: $black
      align-items center
      justify-content center
      +media('md')
        display: flex;

      svg
        left: auto;
        right: 10px

  &__search
    position: fixed;
    top: 0
    left: 0
    width: 100%
    z-index: 10
    visibility: hidden;
    pointer-events none
    +media('md')
      display: none;

    &-bar
      position: relative;
      background: $brown2
      transform translateY(-50px)
      opacity: 0
      anim(.2s)

    &-form
      position: relative;
      width: 100%

    &-button
      position: absolute;
      right: 0
      top: 21px
      padding: 11px 21px 11px
      font-size: 12px

    &-input
      display: block;
      width: 100%
      height: 76px
      font-size: 15px
      color: $white
      placeholder($white)

    &-sub
      border-top: 1px solid #967564
      height: 44px

      .c
        height: 100%
        display: flex;
        align-items center
        position: relative;

      .link
        margin-right: 10px
        color: $white
        opacity: .35

        &:hover
          opacity: 1

    &-close
      position: absolute;
      right: 0
      top: 100%
      width: 50px
      height: 50px
      background: #f8f6f5
      text-align: center;
      +media('md')
        right: 50%
        margin-right: -25px

      &:hover
        svg
          opacity: 1;

      &:active
        svg
          fill: $brown2

      svg
        width: 16px
        height: 16px
        fill: $brown1
        opacity: .25
        pointer-events none
        anim()

    &:before
      content ''
      position: fixed;
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: $black
      opacity: 0
      anim(.1s)

    &--active
      visibility: visible;
      pointer-events all

      &:before
        opacity: .95

      & ^[1]-bar
        transform none
        opacity: 1

