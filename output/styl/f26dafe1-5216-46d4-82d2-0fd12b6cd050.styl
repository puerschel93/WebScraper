@require '../index.styl'
.block
  display grid
  height 100vh
  background-color bw1
  grid-template-columns: 1fr 340px
  grid-template-rows: minmax(100px, 1fr)
  box-shadow shadl
  @media(max-width 700px)
    grid-template-columns: 1fr
    grid-template-rows: minmax(100px, 100vh) minmax(100px, auto)
    height 100%

.main
  position relative
  overflow hidden
  & > :not(:last-child) 
    display none
    font-size 18px
    &.display 
      display flex
.new
  display flex
  flex-direction column
  overflow hidden
  height 100%
  & > div
    padding 20px   
  & > :nth-child(1)
    flex 0 0 71px
    background-color bw4
  & > :nth-child(2)
    flex 1 1
    overflow-y scroll
    scrollbar-width thin
    & > div
      margin 5px 0px 3px
      font-size 16px
      line-height 24px
      text-indent 10px
      & > :nth-child(1)
        font-size 19px
        padding 4px 0px
        text-decoration underline
    & > :nth-child(1) > div
      font-size 21px
      text-decoration none
    & > :nth-child(2)
      &:after
        display block
        content ''
        width 100%
        margin 10px auto 5px
        height 1px
        background-color gray
      & > :nth-child(2)
        & > .form
          display flex
          padding 5px 0px
          & > :nth-child(1)
            {spanpd}
            margin-right 10px
            flex 0 1 auto
            width 100%
          & > :nth-child(2)
            {button}
            {ellips}
            {backgreen}
            flex 0 1 300px
        & .code
          {spanpd}
          cursor pointer
    &  > :nth-child(3)//qrcode + link
      margin 20px 0px
      & > :nth-child(2)
        & > :nth-child(3)//link
          display flex
          margin 10px 5px
          & > :nth-child(1)//link
            flex 1 1
            {spanpd}
            margin-right 10px
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
          & > :nth-child(2)//copy link button
            flex 0 0
            {button}
            {backyellow}
        & > :nth-child(4)//qrcode
          position relative
          margin 30px auto
          width 300px 
          height 300px 
          background-color bw4
          border-radius 20px
          overflow hidden
          & > :nth-child(2)
            color fb2
          &:hover
            background-color bw5
            & > :nth-child(2)
              text-decoration underline
              color fb1
          & > :nth-child(1)//canvas
            display none
            width 100% !important
            height 100% !important
          & > :nth-child(2)//display canvas button
            {redbutton}
            display none
            position absolute
            left 0
            width 100%
            height 100%
            background-color c000
            border none
            cursor pointer
            border-radius 20px
          &.qrTrue
            background-color c000
          
            & > :nth-child(1)
              display block
          &.qrFalse > :nth-child(2)
            display block
          
  & > :nth-child(3)
    display flex
    background-color bw4
    & > :nth-child(1)
      flex 1 1
      font-size 14px
      color gray
    & > :nth-child(2)
      flex 0 0
      {button}
      {backorange}



.element
  display flex
  flex-direction column
  overflow hidden
  height 100%
  width 100%
  & > .info
    padding 8px 42px
    background-color bw4
    justify-content space-between
    & > :nth-child(1)
      font-size 16px
      font-weight 600
      {ellips}
      font-size 20px
      line-height 34px
    & > :nth-child(2)
      padding-top 5px   
      display flex
      @media(max-width 700px)
        flex-direction column
      & > div
        font-size 14px
        margin-right 10px
        {ellips}
        & > span:nth-child(1)
          color gray
        & > span:nth-child(2)
          margin-left 6px
          text-decoration underline
          text-decoration-style dashed
        & > span.red
          color redl
        & > span.green
          color greenl
        & > span.orange
          color orangel
  & > .chat
    display flex
    flex 1 1 
    height calc(100% - 71px)
    flex-direction column
    & > :nth-child(1)//chat field
      padding 0px 4%
      flex 1 1 
      overflow-y scroll
      scrollbar-width thin
      & > div:not(.system)
        max-width 70%
      & > div
        position relative
        color gray
        clear both
        margin 2px 0px
        &.left
          float left
        &.right
          float right
        &.left,
        &.right
          font-size 16px
          background-color rgba(100,100,100,0.3)
          border-radius 8px
          padding 8px 45px 8px 10px
          & > :nth-child(1)
            position absolute
            right 6px
            bottom 2px
            font-size 12px
        &.file 
          display flex
          cursor pointer
          padding 4px 10px 4px 10px 
          &:hover  
            background-color rgba(100,100,100,0.1)
          &:hover > :nth-child(2) > :nth-child(2)
            opacity 1
          & > :nth-child(2) //svg
            flex 0 0 34px
            padding 4px
            & > path 
              fill gray
          & > :nth-child(3) //info
            flex 1 1
            width calc(100% - 30px)
            margin-right 34px
            & > :nth-child(1)
              {ellips}
              font-size 13px
              font-weight 600
              height 17px
            & > :nth-child(3)
              font-size 13px
              text-transform uppercase
              color gray
              height 17px
              {ellips}
            & > :nth-child(2)
              position absolute
              top 3px
              right 6px
              font-size 12px

        &.system
          padding 4px 10px 4px 10px 
          font-size 14px
          margin 5px auto
          max-width 100%
          text-align center
      & > button
        {button}
        {backorange}
        display block !important
        margin 5px auto
    & > form//input form
      padding 0px 30px
      flex 0 0 
      background-color bw4
      & > :nth-child(1)
        margin-top 10px
        max-height 200px
        overflow-y scroll
        scrollbar-width thin
        & > div//files
          display flex
          padding-top 10px
          &:hover > :nth-child(2) > :nth-child(2)
            opacity 1
          & > :nth-child(1) //svg
            flex 0 0 34px
            padding 4px
            cursor pointer
            & > svg > path 
              fill gray
          & > :nth-child(2) //info
            display flex
            flex 1 1
            flex-flow wrap
            & > :nth-child(1)
              flex 1 1 
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
              font-size 13px
              font-weight 600
              height 17px
            & > :nth-child(2)
              flex 0 0
              {cross}
            & > :nth-child(3)
              flex 1 1 100%
              font-size 13px
              text-transform uppercase
              color gray
              height 17px

      & > :nth-child(2)//form input
        display flex
        padding 10px 0px
        & > label:nth-child(1),
        & > label:nth-child(3)
          flex 0 0 34px
          height 34px
          cursor pointer
          padding 4px
          & > svg
            width 100%
            height 100%
            & > path 
              fill gray
          &:hover>svg>path 
            fill bluel
          & > input
            display none
        & > input:nth-child(2)
          {spanpd}
          flex 1 1
          &:focus 
            border 2px solid bluel
  & > .start
    position absolute
    left 50%
  & > .waiting
    position absolute
    left 50%



.contacts 
  display flex
  flex-direction column
  background-color bw3
  overflow hidden
  @media(max-width 700px)
    max-height 50vh
  & > :nth-child(1)
    flex 0 0 auto
    font-size 20px
    padding 24px 14px
    {ellips}
    {backgreen}
    color bw1
  & > :nth-child(2)
    flex 1 1
    overflow-y scroll
    scrollbar-width thin
    & > div
      position relative
      display flex
      flex-wrap wrap
      font-size 16px
      padding 14px   
      &:after
        display block
        position absolute
        left 3% 
        bottom 1px
        content ""
        width 94%
        height 1px
        background-color rgba(200,200,200, 0.5)
      
      & > :nth-child(1)
        font-size 18px
        height 24px
        color gray
        flex 1 1 calc(100% - 20px)
        {ellips}
        cursor pointer
        &:hover
          text-decoration underline
      &:hover > :nth-child(2)
        opacity 1
      & > :nth-child(2)
        {cross}
      & > :nth-child(3),
      & > :nth-child(4)
        font-size 13px
        flex 1 1 100%


