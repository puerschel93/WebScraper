@media (min-width: 320px) and (max-width: 480px) {
	
	main {
		
		overflow: hidden
	}
	
	.wrapper {
		max-width: 91%
	}
	
	.mobile-none {
		display: none
	}
	
	.desktop-none {
		display: block;
	}
	
	.title {
		h1 {
			font-size: rem(47);
			line-height: rem(57);
		}
		
		h2 {
			font-size: rem(28);
			line-height: rem(32);
		}
		
	}
	
	.btn-cart {
		position: fixed;
		right: 1rem;
		transform: translate(0%, 0);
		width: rem(70)
		height: rem(70)
	}
	
	.shopping-bag-svg {
		width: rem(35)
		height: rem(32)
	}
	
	.top-info {
		padding: 2.1rem 0 0.05rem;
		background: linear-gradient(180deg, #622A85,  #6b278a, #752584)
			&:before {
				content ""
				display: block;
				position: absolute;
				background: url("../images/girl-mob.jpg") no-repeat
				background-size: 100%;
				width: 110%;
				height: 110rem;
				top: -2.2rem;
				left: -1.5rem;
				right: 0
				bottom: 0
			}
	}
	
	.top-info__top-txt {
		display: none
	}
	
	.top-info__decor-5, .top-info__decor-6 {
		display: none
	}
	
	.info__wrap {
		width: 100%
		max-width: rem(360)
		margin: auto
		display: flex
		justify-content: center
		align-items: center
	}
	
	.top-info__wrap {
		flex-direction: column-reverse
	}
	
	.info__column {
		width: 100%;
		padding: 0;
		position: relative;
	}
	
	.top-info__title {
		text-align: center
		
		p {
			font-size: rem(20);
			line-height: rem(24);
			margin-top: 0.5rem
		}
	}
	
	.new-price {
		font-size: rem(40);
		line-height: rem(49);
		margin-right: rem(10)
	}
	
	.old-price {
		font-size: rem(24);
		line-height: rem(29);
	}
	
	.top-info__price {
		margin-top: 2.15rem;
		justify-content: center;
	}
	
	.info__footnote {
		margin-top: 16.1rem;
		text-align: center;
	}
	
	.top-info__column-left {
		position: absolute;
		top: 15rem;
		left: 0;
	}
	
	.top-info__img {
		width: 13.07rem;
		margin: 1.7rem 0 0 0.6rem;
	}
	
	.top-info__logo {
		position: absolute;
		top: -4.2rem;
		left: 1.4rem;
	}
	
	.top-info__logo-svg {
		width: 18.07rem;
		height: 20.32rem;
	}
	
	.top-info__discount-btn {
		margin-top: 1.3rem
	}
	
	.advantages__wrap {
		width: 100%
		max-width: rem(360)
		margin: 2.7rem auto 0
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.advantages__column-left {
		width: 100%
		flex-direction: column
	}
	
	.advantages__item {
		width: 100%
	}
	
	.advantages__item-1, .advantages__item-2, .advantages__item-3, .advantages__item-4 {
		margin: 0 0 0.9rem 0
		animation: none
	}
	
	.advantages__item-txt {
		br {
			display: none
		}
	}
	
	.advantages__column-right {
		width: 100%
	}
	
	.sale {
		p {
			font-size: rem(47);
			line-height: rem(57);
		}
	}
	
	.advantages__sale {
		top: 0.7rem;
		right: auto;
		left: 0.1rem;
		width: rem(259);
	}
	
	.advantages__img {
		width: 14.2rem;
		margin: 0.7rem 0 0 5.3rem;
	}
	
	.advantages__bg-txt {
		position: absolute;
		top: 11.1rem;
		left: 0.2rem;
		width: 18.27rem;
	}
	
	.bg-txt {
		p {
			font-size: rem(47);
			line-height: rem(57);
		}
	}
	
	.top-info__decor-1 {
		top: 23.3rem;
		right: 1.8rem;
	}
	
	.top-info__decor-2 {
		top: -0.7rem;
		left: -0.7rem;
	}
	
	.top-info__decor-3 {
		top: 91.4rem;
		right: auto;
		left: 2.8rem;
	}
	
	.top-info__decor-4 {
		top: 60rem;
		left: auto;
		right: -0.4rem;
	}
	
	.about-brand {
		padding: 2.6rem 0 1rem;
	}
	
	.about-brand .wrapper:before {
		display: none
	}
	
	.about-brand__wrap {
		width: 100%
		max-width: rem(360)
		margin: 0rem auto 0
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.about-brand__column-left {
		width: 100%;
		padding-left: 0;
	}
	
	.about-brand__column-right {
		display: none
	}
	
	.about-brand__txt {
		margin-top: 1.85rem;
	}
	
	.characteristics__decor-3, .characteristics__decor-4 {
		display: none
	}
	
	.characteristics__wrap {
		width: 100%
		max-width: rem(360)
		margin: 0rem auto 0
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.characteristics__column-left {
		width: 100%;
		padding: 0;
	}
	
	.gallery__item {
		width: 49.1%;
		height: rem(135);
		margin-bottom: 0.4rem;
		
	}
	
	.characteristics__column-right {
		width: 100%;
		padding-left: 0;
	}
	
	.characteristics__title {
		margin-top: 1.8rem;
	}
	
	.characteristics__table {
		margin-top: 1.05rem;
	}
	.characteristics__table-line {
		span{
			width: auto;
			display: inline
		}
	}
	
	.product {
		padding: 2.1rem 0 2.3rem;
	}
	
	.product__wrap {
		width: 100%
		max-width: rem(360)
		margin: 0rem auto 0
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.product__column-left {
		width: 100%;
		padding-left: 0;
	}
	
	.product__txt {
		margin-top: 1.25rem;
	}
	
	.product__price {
		margin-top: 1.2rem;
		margin-left: 0.5rem;
	}
	
	.product__column-right {
		width: 100%;
	}
	
	.product__img {
		position: relative;
		width: 14.27rem;
		margin: 1.3rem auto 0;
	}
	
	.product__img:before {
		width: 18.25rem;
		height: 18.25rem;
		transform: translate(-50%, -50%);
	}
	
	.product__gallery {
		width: 100%;
		padding: 0;
		margin-top: 2rem;
		flex-wrap: wrap
	}
	
	.product__gallery .gallery__item {
		width: 46.5%;
		margin-bottom: 1.1rem
		
		&:nth-child(3) {
			display: none
		}
	}
	
	.product__form {
		margin: 1.25rem auto 0;
		padding: 0;
		width: 100%
		max-width: rem(360)
	}
	
	.order-form {
		flex-direction: column
		
		input {
			margin-right: 0
			margin-bottom: 0.7rem
		}
		
		button {
			margin: 0.6rem auto 0;
		}
	}
	
	.product__footnote {
		text-align: center;
		margin-top: 1.2rem;
	}
	
	.review__decor-3, .review__decor-4 {
		display: none
	}
	
	.review:before {
		width: 12.32rem;
	}
	
	.review {
		padding: 2.6rem 0 2rem;
	}
	.review__decor-1 {
		top: -2rem;
		left: auto;
		right: 0.1rem;
	}
	.review__wrap {
		padding: 0;
		width: 100%
		max-width: rem(360)
		margin: 0rem auto 0
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.review__slider {
		margin-top: 1.5rem
		
		.swiper-slide {
			flex-direction: column
			width: 100%
		}
	}
	
	.review__item {
		margin-bottom: 1.2rem;
	}
	
	.review__button-prev {
		top: auto;
		bottom: -3rem;
		left: 1.5rem;
	}
	
	.review__button-next {
		top: auto;
		bottom: -3rem;
		left: auto;
		right: 1.6rem;
	}
	
	.leave-feedback {
		text-align: right;
		margin-top: 4.4rem;
		position: relative;
		top: auto;
		right: auto
	}
	
	.bottom-info:before {
		width: 12.32rem;
	}
	
	.bottom-info .wrapper:before {
		width: rem(411)
		background-size: 100%;
		height: 52.94rem;
		top: 16.5rem;
		left: -0.1rem;
	}
	
	.bottom-info__wrap {
		flex-direction: column
	}
	
	.bottom-info {
		padding: 0.4rem 0 2.45rem
	}
	
	.bottom-info__column-right {
		position: absolute
		top: 14rem;
		left: 0;
	}
	
	.bottom-info__sale {
		position: absolute;
		top: 0.3rem;
		right: auto;
		left: 0.7rem;
		width: 18rem;
	}
	
	.bottom-info__img {
		width: 15.19rem;
		margin: 3.2rem 0 0 -1.2rem;
	}
	
	.bottom-info__logo {
		position: absolute;
		top: 5rem;
		right: auto;
		left: 8rem;
	}
	
	.bottom-info__logo-svg {
		width: 10.5rem;
		height: 12.88rem;
	}
	
	.bottom-info__footnote {
		margin-top: 19.3rem
	}
	
	.bottom-info__discount-btn {
		margin-top: 1.2rem
		display: flex
		justify-content: center
		align-items: center
	}
	.bottom-info__decor-1 {
		top: -0.4rem;
		right: auto;
		left: -0.5rem;
	}
	.bottom-info__decor-2 {
		top: 18.2rem;
		right: auto;
		left: 0.8rem;
	}
	.create {
		margin-top: 2.6rem;
		text-align: center;
	}
}

@media (min-width: 360px) and (max-width: 480px) {
	.top-info {
			&:before {
				content: "";
				display: block;
				position: absolute;
				background: url("../images/girl-1.jpg") no-repeat;
				background-size: 100%;
				width: 71.19rem;
				height: 108.25rem;
				top: -2.2rem;
				left: -38.5rem;
				right: 0;
				bottom: 0;
			}
	}
	.order-form {
		input {
			width: rem(360)
		}
		
		button {
			width: rem(360)
		}
	}
.btn{
	width: rem(360)
}
}