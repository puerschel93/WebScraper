.special_column {
  padding 10px;
  font-size 30px
  font-weight: bold;
  margin 0 5px 12px 5px
  border-radius 5px
  border: 1px solid #bbc9e4;
  box-shadow 1px 2px 5px #3f79e5
  background-repeat: no-repeat;
}

#special #title {
  border-radius 5px
  margin: 12px 0 12px 0;
  background-color: #3f79e5;
  color: #fff
}

.special_column p {
  color: #6694e5;
  font-size 12px
  margin 0
}

.special_column:hover {
  color #3f79e5
  border: 1px solid #3f79e5;
}

.special_column > a {
  border-bottom: 0;
}
