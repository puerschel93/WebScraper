footer
    border-top: 2px solid #00abec!important

.footer
    margin auto
    width 1180px
    padding 40px 0 22px
    font-family Whitney
    letter-spacing .35px
    font-size 12px
    line-height 30px
    color: $dark-blue
    >p
        width 1154px
        color #999
        font-size 11px
        line-height 15px
        text-align center
        margin: -36px auto;
    &_logo1
        padding-top 10px
    &_social
        a
            font-size 16px
            margin-right 15px
            color $white
            padding 18px
            border-radius 50%
            &.i-vk
                font-size 10px
            &.i-viber
                font-size 28px
    &_text__mod_col
        color: $text-grey
        line-height: 12px;
        padding 12px 0
    &_grafic
        li
            &:first-child
                font-family: WhitneyMedium
            p
                span
                    margin 5px
                    font-family WhitneySemiBold
                    font-weight 400
    &_contact
        line-height 20px
        padding-top 10px
        text-align center
        p
            opacity: .5;
            letter-spacing: 0.35px;
            font-size 12px
    &_number
        font-weight 400
        font-size 26px
        letter-spacing 0.65px
        font-family WhitneyLight
        &:hover
            color $blue
    &_href_other
        display block
        text-align center
        margin 10px auto
        padding 4px 0 5px
        border 1px solid $blue
        border-radius 5px
        &:hover
            background $blue
            color $white

.comodologo
    display block
    width 125px
    height 70px
    background url("../img/footer/comodo.png") 50% no-repeat / cover
.footer_logo1
    width: 237px
    height 50px
.cert-logos
    padding-top: 10px;
    display: inline-flex;
    margin-left: 79px;
    margin-top: 12px;
.cert-logo2
    margin-left: 14px;
    margin-right: -6px;
    width: 96px!important;
    height: 100px!important;
.cert-logo
    width: 78px;
    height: 60px;
    display: block;
.footer-list-1
    font-size: 13px;
    text-transform: uppercase;
    margin-left: 103px;
    margin-right: -1px;
    margin-top: 6px;


.footer-list-2
    font-size: 13px;
    text-transform: uppercase;
    margin-left: 68px;
    margin-right: 272px;
    margin-top: 5px;
.footerClass
    display: inline-flex;
    > .cert-logos
        display none
.footer_grafic
    margin-left: -158px;
    padding-left: 0;
    margin-right: 15px;
.wtime
    text-transform: uppercase;
    font-size: 13px;
    margin-top: 4px;
    margin-left: -3px;
    letter-spacing: 0.6px;
.wtimegraf
    margin-top: -5px;
    margin-left: -3px;
    letter-spacing: -.4px;
    font-size: 13px;
    width: 104%;
    margin-bottom: -5px;
.footer_href_other
    display: block!important;
    text-align: center!important;
    padding: 4px 0px 5px!important;
    border: 1px solid #00abec!important;
    width: 187px!important;
    border-radius: 5px!important;
    margin: 3px auto -6px 83px!important;
.footer_number
    font-weight: 600!important
    font-size: 14px!important
    letter-spacing: .65px!important
    font-family: WhitneyLight!important
    margin-left: 42px!important
.wtimegraf-small
    font-size:  11px
    font-family: Whitney!important
    font-weight: 100!important
    margin-left: -3px!important;
.wdaygraf
    font-size: 13px;
    margin-left: -3px;

@media screen and (max-width: 1200px)
    .footerClass
        display flex
        flex-wrap wrap
        max-width 366px
        li > .cert-logos
            display none
        > .cert-logos
            display flex
            margin 0
            .cert-logo2
                height auto !important
        > ul:nth-child(1)
            display flex
            flex-direction column
            li:nth-child(2)
                order 3
    .footer_grafic, .wdaygraf, .wtime, .wtimegraf
        margin 0
    .footer
        overflow hidden
        width 100%
        padding 15px 0 22px 15px
        > p
            width 100%
            margin 30px 0 0
            padding-right 15px
        &_logo1
            margin 0
        &_social
            margin 20px 0 -10px 0
        &_contact
            margin -140px 0 0 127px
    .footer-list-1, .footer-list-2
        display none

@media screen and (max-width: 420px)
    .footer
        &_contact, &_number, &_href_other
            margin 0 !important
            text-align left
        &_contact > li:nth-child(1)
            margin-bottom 10px

