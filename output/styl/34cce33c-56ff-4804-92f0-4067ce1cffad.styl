.general
	overflow hidden

	background-repeat no-repeat
	background-size cover

	&__wrapper
		margin-top 68px
		padding 87px 20px 123px

		display flex
		flex-direction column
		align-items center

		position relative

		color $white
		text-align center

	&__content
		position relative
		z-index 10

		width 100%

	&__subtitle
		margin 0
		font-size 34px
		line-height 1
		font-family $Light

	&__title
		margin-top 0
		margin-bottom 44px
		padding-bottom 17px

		display inline-flex

		font-size 82px
		line-height 90px
		font-family $Bold

		border-bottom 3px solid $white

	&__text
		margin-top 0
		margin-bottom 11px

		font-size 24px
		line-height 26px
		font-family $Regular

		text-transform uppercase

	&__info
		margin-top 0
		margin-bottom 42px

		display flex
		align-items center
		justify-content center

		font-size 36px
		line-height 48px
		font-family $Bold

		text-transform lowercase

		&-total
			margin-right 15px

			display inline-block

		&-price
			font-size 48px
			line-height 1

	&__buttons
		display flex
		justify-content center

	&__button
		height 66px
		width 100%
		max-width 260px

		display flex
		align-items center
		justify-content center
		font-size 16px
		line-height 30px
		font-family $Semibold

		background-color transparent
		border 2px solid $white
		color $white
		text-transform uppercase
		cursor pointer

		transition-property background-color, color
		transition-duration .3s

		&:not(:last-child)
			margin-right 20px

		&:hover
			color $pink
			background-color $white

	&__image
		position absolute

		display block
		width 100%
		max-width 257px

		&-one
			left 0
			bottom -13px

		&-two
			right 0
			bottom -47px

@media(max-width: 1180px)
	.general

		&__image

			&-one
				left -1%

			&-two
				right -1%

@media(max-width: 960px)
	.general

		&__buttons
			flex-direction column
			align-items center

		&__button
			margin-left 0

			max-width 320px

			&:not(:last-child)
				margin 0
				margin-bottom 20px
		&__image

			&-one
				left -7%

			&-two
				right -7%

@media(max-width: 768px)
	.general

		&__wrapper
			margin-top 68px
			padding 91px 20px 69px

		&__subtitle
			font-size 24px

		&__title
			margin-bottom 25px
			padding-bottom 20px

			font-size 57px
			line-height 1

		&__text
			margin-bottom 5px

		&__info
			margin-top 0
			margin-bottom 17px

		&__button

			&:not(:last-child)
				margin-bottom 15px

		&__image

			&-one
				left -14%
				bottom -77px

			&-two
				right -14.5%
				bottom -107px

@media(max-width: 660px)
	.general

		&__wrapper
			text-align left

		&__text
			max-width 60%

		&__info
			justify-content flex-start

		&__buttons
			align-items flex-start

		&__image

			&-one
				display none

			&-two
				right -5%

@media(max-width: 470px)
	.general

		&__wrapper
			text-align center

		&__subtitle
			font-size 20px

		&__title
			font-size 45px

		&__text
			margin 0 auto 15px
			max-width 70%

			font-size 20px

		&__info
			justify-content center

			font-size 24px

			&-price
				font-size 38px

		&__buttons
			align-items center

		&__button
			max-width none

		&__image

			&-two
				display none