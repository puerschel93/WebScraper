@keyframes zoom_out {
    to {transform: scale(0.5,0.5)}
}


.zoom_out_in
    & .video
        animation: zoom_out_img 1.5s forwards


@keyframes zoom_out_img {
    0%{ 
        transform: scale(1,1)
        border-radius: 0
        box-shadow: 0 20px 30px rgba(0,0,0,0)
        }
    20% {
        transform: scale(0.7,0.7)
        border-radius: 10px
        box-shadow: 0 20px 30px rgba(0,0,0,0.3)
    }
   80% {
        transform: scale(0.7,0.7)
        border-radius: 10px
        box-shadow: 0 20px 30px rgba(0,0,0,0.3)
    }
    100% {
        transform: scale(1,1)
        border-radius: 0
        box-shadow: 0 20px 30px rgba(0,0,0,0)

    }
}


