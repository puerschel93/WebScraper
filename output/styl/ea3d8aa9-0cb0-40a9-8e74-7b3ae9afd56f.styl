.main-slider
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  p
    margin 0
  .slick-list, .slick-track, .slick-slide
    height 100%
  .container-fluid
    height 100%
    display flex
    flex-flow column
  .slick-slide
    padding 83px 0 0
  .slick-arrow
    position absolute
    font-size 20px
    line-height 1
    bottom 110px
    z-index 10
    color white
    transition 0.15s
    width 28px
    padding 0 6px
    height 31px
    background linear-gradient(white, white) no-repeat 50% 50%/100% 3px
    background-clip content-box
    transform translate3d(0, 0, 0)
    &:before, &:after
      content ''
      position absolute
      border-top 4px solid transparent
      border-bottom 4px solid transparent
      height 9px
      top 50%
      margin -4.5px 0
    &:before
      border-right 6px solid
      left 0
    &:after
      border-left 6px solid
      right 0
    &:hover
      width 38px
  .slick-prev
    right 50%
    margin-right -6px
  .slick-next
    left 50%
    margin-left -6px
  &__col
    position relative
    &_1
      flex none
      max-height 50%
      overflow hidden
      z-index 1
    &_2
      flex 0 1 100%
      margin 0 0 25px
  &__header
    font-weight 600
    padding 14px 20px 0 20px
    position relative
    color white
    margin-bottom 10px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    &:before
      content ''
      position absolute
      top 0
      left 0
      size 36px 34px
      border-top 4px solid #04b6f5
      border-left 4px solid #04b6f5
  &__title
    font-size 45px
    line-height 1.25em
    overflow hidden
    //max-height 2.5em
    padding 0 20px
    margin 0 0 25px
  &__caption
    display none
    overflow hidden
    line-height ($line-height-base)em
    //max-height $line-height-base*3em
    font-weight 300
  &__img
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    margin auto
    max-width 100%
    max-height 100%
  &__decoration
    position absolute
    width 130%
    padding-top 130%
    margin -65%
    top 50%
    left 50%
    pointer-events none
    background inline-image('main-slider-circles.svg') no-repeat 50% 50%/contain
  &__more
    display none

  @media (max-width $screen-xs-max) and (orientation landscape)
    .container-fluid
      flex-flow row
    &__col
      flex none
      &_1
        width calc(60% - 15px)
        margin 0 15px 0 0
        align-self center
        max-height 100%
      &_2
        width calc(40% - 15px)
        margin 0 0 25px 15px


  @media (min-width $screen-sm-min)
    .container-fluid
      flex-flow row
    .slick-slide
      padding 139px 0 118px
    .slick-arrow
      bottom percentage(215/768)
    &__col
      flex none
      &_1
        width calc(60% - 15px)
        margin 0 15px 0 0
        align-self center
        max-height 100%
      &_2
        width calc(40% - 15px)
        margin 0 0 0 15px
    &__header
      font-size 18px
      padding 22px 30px 0 30px
      margin-bottom 25px
      &:before
        size 47px 45px
    &__title
      padding 0
      font-size 50px
      //max-height 1.25em
      margin-bottom 30px
    &__caption
      display block
      margin-bottom 40px
      //max-height $line-height-base*2em
    &__more
      display inline-flex

  @media (min-width $screen-md-min)
    &__col
      width calc(50% - 15px)
    &__title
      font-size 60px
    &__caption
      font-size 16px
    &__decoration
      width 110%
      padding-top 110%
      margin -55%