.rechar_view
  background #FFF
  height calc(100% -50px)
  .part1
    width 100%
    background-repeat no-repeat
    background-size cover
    -webkit-background-size cover
    -o-background-size cover
    position relative
    height 150px
    z-index 10
    .part1_p
      height 120px
      padding-top 30px
      margin 0 auto
      width 250px
      display flex
      .par_lf
        width 60px
        height 60px
        flex 0 0 60px
      .par_rt
        margin-top 10px
        margin-left 15px
        flex 0 0 190px
        p
          color #111
          .vip
            padding 0rem 10px
            text-align center
            font-weight normal
            font-size 12px
            background #F5A623
            border-radius 3px
            line-height 0.24rem
            color #fff
        .balace_wrap
          margin-top 5px
          .balace
            font-size 14px
            color #444
          .money
            font-size 14px
            color #444
        .present_wrap
          margin-top 5px
          span
            font-size 13px
            color #fff
  .part2
    width 100%
    position relative
    // background-color #F9F9F9
    // height: 300px
    .scroll_wrap
      width 100%
      // height 100px
      position relative
      .part_scroll
        width 100%
        position absolute
        bottom 0
        height 85px
        overflow hidden
        overflow-x scroll
        top -20px
        .vip_container
          min-width 100%
          box-sizing border-box
          height 100%
          .vip_item
            width 135px
            height 85px
            background-color #6B89FE
            border-radius 6px
            margin-left 20px
            margin-right 20px
            float left
            .vip_p1
              width 100%
              padding-top 5px
              text-align center
              height 20px
              line-height 20px
              font-size 12px
              color #fff
            .vip_p2
              width 100%
              text-align center
              color #fff
              height 45px
              line-height 45px
              font-size 22px
            .vip_p3
              width 100%
              height 15px
              line-height 15px
              color #fff
              font-size 10px
              color #fff
              font-family PingFang-SC-Medium
              text-align center
              background-color #F5A623
              border-bottom-left-radius 6px
              border-bottom-right-radius 6px
    .p2_title
      height 50px
      line-height 50px
      padding-left 15px
      padding-right 15px
      background #f8f8f8
      .p2_ti_p1
        float left
        // font-weight bold
        font-family PingFang-SC-Bold
        font-size 15px
        color #4A4A4A
      .p2_ti_p2
        float right
        font-size 14px
        color #9B9B9B
  .part3
    width 100%
    position relative
    // height 225px
    background-color #FFF
    padding-bottom 20px
    margin-top 10px
    .p3_title
      height 35px
      line-height 35px
      padding-left 15px
      padding-right 15px
      background-color #FFF
      p
        font-family PingFang-SC-Medium
        font-size 16px
        color #4A4A4A
    .p3_ipt_wrap
      padding-left 15px
      padding-right 15px
      height 85px
      background-color #FFF
      // margin-bottom 10px
      .p3_wp_p
        height 50px
        width 100%
        position relative
        margin-bottom 10px
        .p3_wp_p_sp
          position absolute
          font-size 22px
          top 9px
        input
          box-sizing border-box
          height 50px
          width 100%
          padding-left 20px
          font-size 14px
          border 0
          outline 0
          // border-bottom 1px solid #979797
      .p3_ipt_useful
        width 100%
        height 20px
        font-family PingFang-SC-Medium
        font-size 14px
        color #9B9B9B
    .p3_money
      height 35px
      line-height 35px
      padding-left 15px
      padding-right 15px
      background-color #FFF
      p
        font-family PingFang-SC-Medium
        font-size 16px
        color #4A4A4A
    .p3_btn
      padding-left 15px
      padding-right 15px
      height 45px
      padding-top 35px
      background-color #FFF
      .topay
        width 100%
        height 100%
        line-height 45px
        display block
        border-radius 25px
        font-size 15px
        background-color #6B89FE
        text-align center
        color #fff
        outline 0
        border none
        touch-action none
        position relative
        overflow hidden
      .topay:after
        content ''
        display block
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        pointer-events none
        background-image radial-gradient(circle, #767676 10%, transparent 10.01%)
        background-repeat no-repeat
        background-position 50%
        transform scale(10, 10)
        opacity 0
        transition transform 0.3s, opacity 0.5s
        height 45px
        line-height 45px
        padding-right 15px
      .topay:active:after
        transform scale(0, 0)
        opacity 0.3
        transition 0s
  .pop_con
    width 100%
    height 285px
    background-color #fff
    padding-left 15px
    padding-right 15px
    box-sizing border-box
    .pop_b_header
      height 65px
      text-align center
      line-height 65px
      box-sizing border-box
      .pop_p1
        height 65px
        line-height 65px
        box-sizing border-box
        font-family PingFang-SC-Medium
        font-size 16px
        width 35px
        padding-top 5px
        float left
