          color #4A4A4A
    .pop_con_sec
      padding-left 15px
      padding-right 15px
      .sec_1
        width 100%
        height 65px
        margin-bottom 15px
        .block
          height 25px
          width 100%
          margin-top 100px
        .rk_b
