#header
  @extend $shadow
  height: banner-height
  background: white
  position: relative
  border-bottom: 1px solid color-border

#header-inner
  display: flex
  justify-content: space-between
  position: relative
  height: banner-height

#main-nav
  display: flex
  height: banner-height
  line-height: banner-height

$nav-link
  opacity: 0.6
  color: color-default
  font-size: banner-font-size
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  padding: 0 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  text-align: center
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  @media mq-mobile
    display: block

#sub-nav
  display: flex
  height: banner-height
  line-height: banner-height

#search-form-wrap
  position: absolute
  top: 20px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font-size: 13px
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777