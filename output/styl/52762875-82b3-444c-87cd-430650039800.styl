//引入混合
@import "mixins.styl"
////适配变量
//公共样式
html
  font-size 14px
.nav-active
  color #b4282d
  border-bottom 2px solid #b4282d
.on
  color #b4282d
.native
  display none
.wrapper-native
  display none !important
.wrapper-active
  display block !important
.active
  display block

//页面样式
#app
  width 100%
  height 100%
  background pink
  overflow-x hidden
  .footer
    border-1px(black,top)
    position fixed
    bottom 0
    left 0
    width 100%
    height 60px
    background white
    .footer-list
      width 100%
      height 100%
      display flex
      .footer-item
        width 20%
        height 100%
        display flex
        flex-direction column
        justify-content center
        align-items center
  .page
    width 100%
    height 100%
    .home//主页样式
      position absolute
      background white
      padding-bottom 60px
      //padding-top 82px
      box-sizing border-box
      top 0
      left 0
      width 100%
      min-height 100%
      .home-header//主页头部
        height 82px
        width 100%
        position relative
        z-index 100
        margin-bottom 5px
        //position fixed
        //top 0px
        //left 0px
        .header-search-login
          width 100%
          box-sizing border-box
          padding 12px
          display flex
          align-items center
          .logo
            width 60px
            height 20px
          .iconsousuo
            position absolute
            top 18px
            left 100px
          input
            width 233px
            height 24px
            border-radius 5%
            border none
            background-color rgba(0,0,0,0.1)
            margin 2px 10px
            text-align center
            line-height 24px
          button
            width 40px
            height 20px
            border-radius 10%
            border 1px solid #b4282d
            font-size 12px
            color #b4282d
            background #ffffff
        .header-nav
          width 100%
          height 30px
          position relative
          .toggle-arrow
            position absolute
            right 0
            top 0
            width 60px
            height 30px
            text-align center
            line-height 30px
            overflow hidden
            background-color #fff
            &.arrowDown
              transform rotateZ(180deg)
          .nav-box
            width 100%
            height 184px
            background #fff
            .box-title
              height 30px
              font-size 16px
            .box-list
              display flex
              flex-wrap wrap
              .box-item
                width 20%
                height 30px
                border 1px solid gray
                border-radius 10%
                margin 5px
                text-align center
                line-height 30px
                &.nav-active
                  border 1px solid #b4282d

          .wrapper//主页头部导航
            width 85%
            height 30px
            //padding 10px
            position relative
            box-sizing border-box
            display flex
            overflow hidden
            .content
              height 30px
              display flex
              //块级元素宽度默认是独占一行，不能由子元素内容撑开高度
              .nav-item
                width 90px
                height 30px
                color #b4282d
                text-align center
                line-height 30px
                &:nth-child(1)
                  width 60px
                &:nth-child(6)
                  width 100px
                //&:nth-child(1)
                //  width 80px
                a
                  padding 5px
                //padding 0 1px

      .home-main
        .swiper-container
          width 375px
          height 200px
          //overflow hidden
          .swiper-wrapper
            display flex
            flex-direction row
            .swiper-slide
              width 375px
              height 200px
              img
                width 375px
                height 200px
          .swiper-pagination
            span
              background-color rgba(255,255,255,0.5)
              width 20px
              height 4px
              border-style none
        .main-grow
          width 100%
          height 36px
          background-color white
          display flex
          justify-content space-around
          align-items center
          font-size 12px
          .grow-icon
            background-image url('../images/grow-icon1.png')
            background-size 100% 100%
            background-repeat no-repeat
            background-position 10px 10px
        .main-navbox
          width 100%
          height 175px
          display flex
          flex-direction row
          text-align center
          flex-wrap wrap
          background #f5f5f5
          .nav-item
            width 20%
            height 75px
            display flex
            flex-direction column
            justify-content center
            align-items center
            img
              width 55px
              height 55px
              margin-bottom 3px
            span
              font-size 12px
        .gift-container
          width 375px
          height 250px
          padding 10px
          //overflow hidden

          .gift-title
            text-align  center
            height 45px
            line-height 45px
            font-size 14px
          .gift-content
            display flex
            text-align  center
            .gift-left
              display flex
              flex-direction column
              width 50%
              background-color #f9e9cf
              margin-right 2px
              span
                font-size 14px
              img
                width 179px
                height 179px
            .gift-right
              width 50%
              display flex
              flex-direction column
              .gift-right-top
                display flex
                background-color #fbe2d3
                .title
                  display flex
                  flex-direction column
                  span
                    font-size 14px
                  span
                    &:nth-child(2)
                      font-size 12px
                img
                  width 100px
                  height 100px
              .gift-right-bottom
                background-color #ffecc2
        .make-container
          width 100%
          padding 10px

          .make-header
            height 50px
            line-height 50px
            display flex
            justify-content space-between

          .make-list
            display flex
            flex-wrap wrap
            .make-item
              width 50%
              height 130px
              display flex
              flex-direction column
              text-align center
              >span
                margin-top 20px
                text-align center
              .content
                display flex
                justify-content center
                align-items center
                display flex
                span:nth-child(1)
                  width 50%
                  color #777
                span:nth-child(2)
                  width 32px
                  height 15px
                  color #ffffff
                  text-align center
                  background-color #cbb693



    .category
      position absolute
      top 0
      left 0
      width 100%
      height 100%
    .reco
      position absolute
      top 0
      left 0
      width 100%
      height 100%
    .cart
      position absolute
      top 0
      left 0
      width 100%
      height 100%
    .profile
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      .profile-header
        height 22px
        display flex
        justify-content space-between
        padding 10px
        >i
          font-size 16px
        .header-right
          >.iconfont
            font-size 20px
      .profile-main
        height 80%
        background #F2F5F4
        .main-login
          padding 100px 0
          text-align center
          img
            margin-left 50%
            transform translateX(-50%)
            width 123px
            height 45px
        .main-loginWays
          height 250px
          padding 0 20px
          .btn
            height 50px
            border 1px solid #DD1A21
            border-radius 2px
            text-align center
            line-height 50px
            margin-bottom 20px
            &.btn-mobile
              color white
              background #DD1A21
            &.btn-email
              color #DD1A21
          //.btn-mobile
          //  border 0 solid #DD1A21
          //  border-radius 2px
          //.btn-email
            //border 0 solid #DD1A21
            //border-radius 2px
        .main-footer
          display flex
          justify-content center
          >span
            margin 0 10px
