.car
    -moz-border-radius-bottomleft 20px 30px
    -moz-border-radius-bottomright 40px 50%
    -moz-border-radius-topleft 20px 30px
    -moz-border-radius-topright 40px 50%
    -webkit-border-bottom-left-radius 20px 30px
    -webkit-border-bottom-right-radius 40px 50%
    -webkit-border-top-left-radius 20px 30px
    -webkit-border-top-right-radius 40px 50%
    *display inline
    *vertical-align auto
    *zoom 1
    background-color car-default
    border-bottom-left-radius 20px 30px
    border-bottom-right-radius 40px 50%
    border-top-left-radius 20px 30px
    border-top-right-radius 40px 50%
    display inline-block
    height 125px
    margin-top: 12px;
    position relative
    vertical-align middle
    width 285px

    &.red
        background-color red
    &.silver
        background-color black


    &:after
    &:before
        background-color inherit
        content ""
        height 12px
        position absolute
        right 80px
        width 12px



    &:after
        -moz-border-radius 3px 100% 0 0
        -webkit-border-radius 3px
        border-radius 3px 100% 0 0
        top -12px



    &:before
        -moz-border-radius 0 0 100% 3px
        -webkit-border-radius 0
        border-radius 0 0 100% 3px
        bottom -12px



    .car-front
        -moz-box-shadow 0px 3px 0  glass
        -moz-transform rotate(-90deg)
        -ms-transform rotate(-90deg)
        -webkit-box-shadow 0px 3px 0  glass
        -webkit-transform rotate(-90deg)
        border-bottom 40px solid  glass
        border-left 8px solid transparent
        border-right 8px solid transparent
        box-shadow 0px 3px 0  glass
        height 0
        position absolute
        right 30px
        top 42px
        transform rotate(-90deg)
        width 70px



        &:after
        &:before
            -moz-border-radius 50%
            -webkit-border-radius 50%
            background-color lights
            border-radius 50%
            content ""
            height 10px
            position absolute
            top 65px
            width 20px



        &:after
            -moz-transform rotate(22deg)
            -ms-transform rotate(22deg)
            -webkit-transform rotate(22deg)
            left -22px
            transform rotate(22deg)



        &:before
            -moz-transform rotate(-22deg)
            -ms-transform rotate(-22deg)
            -webkit-transform rotate(-22deg)
            right -22px
            transform rotate(-22deg)



    .car-middle



        &:before
        &:after
              border-bottom 10px solid  glass
              border-left 30px solid transparent
              border-right 40px solid transparent
              content ""
              display block
              height 10px
              position absolute
              right 52px
              width 130px



        &:before
            bottom 8px



        &:after
            -moz-transform scale(1, -1)
            -ms-transform scale(1, -1)
            -webkit-transform scale(1, -1)
            top 8px
            transform scale(1, -1)



    .car-back
        -moz-transform rotate(90deg)
        -ms-transform rotate(90deg)
        -webkit-transform rotate(90deg)
        border-bottom 35px solid  glass
        border-left 20px solid transparent
        border-right 20px solid transparent
        content ""
        height 0
        left -5px
        position absolute
        top 44px
        transform rotate(90deg)
        width 100px



        &:before
        &:after
            background-color taillights
            bottom -62px
            content ""
            height 12px
            position absolute
            width 23px



        &:before
            -moz-border-radius-bottomleft 40px 22px
            -webkit-border-bottom-left-radius 40px 22px
            border-bottom-left-radius 40px 22px
            left -30px



        &:after
            -moz-border-radius-bottomright 40px 22px
            -webkit-border-bottom-right-radius 40px 22px
            border-bottom-right-radius 40px 22px
            right -30px
