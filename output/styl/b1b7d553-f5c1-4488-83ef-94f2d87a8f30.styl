.head
    position absolute
    top 0
    left 0
    z-index 1
    display flex
    align-items center
    box-sizing border-box
    width 100%
    padding 47px 64px 0 64px
    @media tablet-landscape-large
        padding 40px 40px 0 40px
    @media tablet-portrait
        padding 40px 30px 0 30px
    @media phone
        padding 30px 20px 0 20px

    &__burger
        position relative
        z-index 1
        width 34px
        height 10px
        outline none
        cursor pointer

        &::before
            content ""
            position absolute
            top 0
            left 0
            display block
            width 100%
            height 1px
            background-color white
            transition width .3s 0s ease

        &::after
            content ""
            position absolute
            top 9px
            left 0
            display block
            width calc(100% - 10px)
            height 1px
            background-color white
            transition width .3s 0s ease

        &-cross
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            width 100%
            padding-top 100%

            &::before
                content ""
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%) rotate(45deg)
                width 0
                height 1px
                background-color white
                transition width .3s 0s ease

            &::after
                content ""
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%) rotate(-45deg)
                width 0
                height 1px
                background-color white
                transition width .3s 0s ease

    &__logo
        position absolute
        left 50%
        transform translateX(-50%)

        &-link
            text-decoration none
            outline none

        &-image
            display block
            width 50px
            height 50px

    &__phone
        position relative
        top -4px
        margin 0 0 0 auto
        font-family "Cormorant"
        font-size 24px
        line-height 30px
        font-weight 300
        color white
        text-decoration none
        outline none
        @media phone
            display none

    &__search-button
        padding 0
        margin 0 0 0 40px
        background none
        border none
        outline none
        cursor pointer
        @media phone
            margin 0 0 0 auto

        & svg
            width 20px
            height 20px
            fill none
            stroke white
            stroke-width 1.2px
            stroke-linecap round
            stroke-linejoin round
            stroke-dasharray 55
            stroke-dashoffset 0
            transition stroke-dashoffset 1.5s 0s ease

        &:hover
            & svg
                stroke-dashoffset 110

    &__menu
        position fixed
        top 0
        left 0

.head__burger:hover
    &::before
        width calc(100% - 10px)

    &::after
        width 100%

.menu
    width 0
    height 100%
    overflow hidden
    transition width 0s 1.3s linear

    &__container
        display flex
        flex-wrap nowrap
        width 100%
        height 100%
        @media tablet-landscape-small
            display block
            overflow-y scroll

    &__aside
        flex-shrink 0
        display flex
        align-items center
        justify-content center
        box-sizing border-box
        width 0
        padding 0
        background-color main-gold
        overflow hidden
        transition width 1s .3s ease, padding 1s .3s ease
        @media tablet-landscape-small
            padding 80px 0
            transition width .8s .3s ease, padding .8s .3s ease

        &-inner
            display flex
            flex-direction column
            align-items center
            justify-content center
            opacity 0
            visibility hidden
            transition opacity .5s 0s ease, visibility 0s .5s linear
            @media tablet-landscape-small
                width 100%

    &__logo
        width 100%
        max-width 280px
        margin 0 0 79px 0
        @media laptop
            max-width 200px
            margin 0 0 50px 0
        @media tablet-portrait
            display none

    &__image
        display block

    &__branches
        text-align center
        @media tablet-landscape-small
            width 100%

        &-list
            margin 0
            padding 0
            list-style none
            @media tablet-landscape-small
                display flex
                flex-wrap nowrap
                justify-content center
            @media tablet-portrait
                flex-direction column
                align-items center

        &-item + &-item
            margin 40px 0 0 0
            @media tablet-landscape-small
                margin 0 0 0 48px
            @media tablet-portrait
                margin 40px 0 0 0

        &-address
            display block
            font-family "Helvetica-Neue"
            font-size 15px
            line-height 19px
            font-weight 300
            color gray-gold
            text-align center

        &-phone
            display inline-block
            font-family "Cormorant"
            font-size 30px
            line-height 34px
            font-weight 300
            color white
            text-decoration none

        &-link
            display inline-block
            margin 86px 0 0 0
            font-family "Helvetica-Neue"
            font-size 12px
            line-height 22px
            font-weight 300
            color white
            text-decoration none
            text-transform uppercase
            letter-spacing 3px
            opacity 1
            transition opacity .3s 0s ease
            @media laptop
                margin 50px 0 0 0

            &:hover
                opacity .5

    &__reserve-button
        margin 43px 0 0 0

    &__wrapper
        box-sizing border-box
        width 0
        height 100%
        overflow hidden
        background-color #fafafa
        transition width .8s .3s ease
        @media tablet-landscape-small
            height auto
    
    &__cols
        display flex
        flex-wrap nowrap
        justify-content space-between
        box-sizing border-box
        width calc(100% + 17px)
        height 100%
        padding 0 64px
        overflow-y scroll
        opacity 0
        visibility hidden
        transition opacity .5s .1s ease, visibility 0s .6s linear
        @media tablet-landscape-large
            padding 0 40px
        @media tablet-landscape-small
            width 100%
            height auto
            padding 0
            overflow-y hidden
            transition opacity .5s 0s ease, visibility 0s .5s linear, padding .8s .3s ease
        @media tablet-portrait
            flex-direction column
            align-items center
            margin 0 0 80px 0

    &__col
        width calc(50% - 24px)
        @media tablet-portrait
            width 100%

    &__list
        margin 0
        padding 130px 0
        list-style none
        text-align center
        @media laptop
            padding 80px 0
        @media tablet-portrait
            padding 66px 0 0 0

    &__item
        font-family "Cormorant"
        font-size 36px
        line-height 40px
        font-weight 300
        color main-gold

    &__item + &__item
        margin 66px 0 0 0

    &__link
        font-family "Cormorant"
        font-size 36px
        line-height 40px
        font-weight 300
        color inherit
        text-decoration none
        opacity 1
        transition opacity .3s 0s ease
        @media laptop
            font-size 32px
            line-height 36px

        &:hover
            opacity .5

    &__submenu
        &-list
            margin 38px 0 0 0
            padding 0
            list-style none

        &-item
            font-family "Helvetica-Neue"
            font-size 15px
            line-height 19px
            font-weight 300
            color black

        &-item + &-item
            margin 18px 0 0 0

        &-link
            font-family "Helvetica-Neue"
            font-size 15px
            line-height 19px
            font-weight 300
            color inherit
            text-decoration none
            opacity 1
            transition opacity .3s 0s ease

            &:hover
                opacity .5

.menu__branches
    &-address + &-phone
        margin 3px 0 0 0

.js-burger-menu-is-open
    overflow-y hidden

    & .menu
        width 100%
        transition width 0s 0s ease

        &__aside
            width calc(100% / 3)
            padding 0 64px
            transition width 1s .2s ease, padding 1s .2s ease
            @media tablet-landscape-large
                padding 0 40px
            @media tablet-landscape-small
                width 100%
                padding 80px 40px
                transition width .8s 0s ease, padding .8s 0s ease
            @media tablet-portrait
                padding 80px 30px
            @media phone
                padding 80px 20px

            &-inner
                opacity 1
                visibility visible
                transition opacity .5s .9s ease, visibility 0s .9s linear
                @media tablet-landscape-small
                    transition opacity .5s .8s ease, visibility 0s .8s linear

        &__wrapper
            width calc(100% / 1.5)
            transition width .8s 0s ease
            @media tablet-landscape-small
                width 100%

        &__cols
            padding 0 40px
            opacity 1
            visibility visible
            transition opacity .5s .8s ease, visibility 0s .8s linear, padding .8s 0s ease
            @media tablet-portrait
                padding 0 30px
            @media phone
                padding 0 20px

.js-burger-is-open
    &::before,
    &::after
        width 0

    &:hover
        &::before,
        &::after
            width 0

    & .head__burger-cross
        transition transform .5s 0s ease 

        &:hover
            transform translate(-50%, -50%) rotate(90deg)
            transition transform .5s 0s ease 

        &::before,
        &::after
            width 100%
            transition width .3s .3s ease
