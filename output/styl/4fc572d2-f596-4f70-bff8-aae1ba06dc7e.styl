/* BODY & HEADER */
body
  cursor: default
  line-height: 17px
  background-color: #F2F2F2
  height: 256px
  font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
  font-size: 14px
  min-height: 100%
  color: #333333
  position: relative
  min-width: 958px
  a
    color: #76B718
    text-decoration: none
  .main-container
    border-bottom: 6px solid #ffffff
    .header
      background-color: #343434
      z-index: 1010
      height: 44px
      .container
        .brd_left
          height: 43px
          left: 1px
          top: 1px
        .brd_right
          height: 44px
          top: 0px
          right: 1px
        height: 33px
        margin-left: -21px
        overflow: hidden
        padding-left: 20px
        padding-right: 20px
        padding-top: 11px
        transition-duration: 200ms
        transition-property: height
        width: 926px
        position: relative
        border-left: 1px solid #212121
        border-right: 1px solid #5c5c5c
        .logo
          display: inline-block
          margin-right: 15px
          a.inline-logo
            get_common_sprite()
            background-position: 0 -806px
            background-repeat: no-repeat
            display: inline-block
            height: 24px
            width: 114px
            &:hover
              background-position: 0px -831px
        .social-links
          display: inline-block
          a
            get_common_sprite()
            background-repeat: no-repeat
            display: inline-block
            height: 25px
            width: 24px
            margin-left: 3px
          a.facebook
            background-position: 0 -1213px
            &:hover
              background-position: 0px -1238px
          a.twitter
            background-position: -24px -1213px
            &:hover
              background-position: -24px -1238px
          a.vkontakte
            background-position: -48px -1213px
            &:hover
              background-position: -48px -1238px
        .user-control
          position: absolute
          right: 20px
          top: 5px
          #user_auth
            margin-top: 8px
            & > *
              display: inline-block
              font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
              font-size: 15px
              line-height: 24px
              text-shadow: 0 -1px 0 #0E0E0E
              white-space: nowrap
            & > a
              color: #E6E6E6
              cursor: pointer
              &:hover
                color: #ffffff
                text-decoration: none
            span
              color: #878787
    .header__bottom
      get_bottom_strip()
      height: 12px
      margin-bottom: -7px
      z-index: 1010
      .grid-bottom
        get_grid_bottom()
        height: 6px
        margin-left: -20px
        width: 968px
    .header__top-offset
      .inner
        height: 34px
        border-left: 1px solid #e4e4e4
        border-right: 1px solid #e4e4e4
    .search-module
      background-color: #F2F2F2
      font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
      font-size: 14px
      overflow: hidden
      .top-line__shadow
        .page-wrap
          border-left: 1px solid #e4e4e4
          border-right: 1px solid #e4e4e4
          width: 928px
          .left-bar
            float: left
            font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
            width: 272px
            .logo
              display: inline-block
              margin-top: 54px
              get_main_sprite()
              background-position: 0 -114px
              width: 135px
              height: 120px
            p.about
              font-size: 14px
              line-height: 20px
              margin: 40px 0 0
              text-shadow: 0 1px 0 white
            .short-menu
              display: inline-block
              font-size: 18px
              line-height: 38px
              margin-top: 36px
              text-align: left
            .short-menu__item:hover
              color: #568511
            .short-menu__item
              get_common_sprite()
              background-position: 181px -968px
              color: #67A015
              display: inline-block
              font-family: Georgia, "Nimbus Roman No9 L", serif
              font-size: 16px
              font-style: italic
              height: 40px
              margin-top: 14px
              padding-right: 48px
              text-decoration: underline
              text-shadow: 0 1px 0 white
              width: 173px
              &.how
                &:hover
                  background-position: 181px -1088px
              &.fin
                background-position: 181px -1048px
                cursor: pointer
                &:hover
                  background-position: 181px -1168px
          .right-bar
            margin-left: 272px
            padding-left: 48px
            .pay-ways:after
              content: ""
              height: 0
              width: 99%
              display: inline-block
              text-align: left
              font-size: 2px
              line-height: 0
              text-align: justify
              width: 592px
            .pay-ways
              .item
                background: url('/app/images/main_sprite.png') no-repeat
                display: block
                float: left
                height: 39px
                margin-left: 8px
                vertical-align: middle
              .item.caption
                background: none repeat scroll 0 0 transparent !important
                font-size: 14px
                line-height: 54px
              .item.evroset
                background-position: 0 -450px
                width: 120px
              .item.svyaznoy
                background-position: -120px -450px
                width: 110px
              .item.mastercard
                background-position: -230px -450px
                width: 70px
              .item.visa
                background-position: -300px -450px
                width: 80px

/*FOOTER*/
.left_footer_border
  border-left: 1px solid #5c5c5c

.right_footer_border
  border-right: 1px solid #5c5c5c
  height: 438px !important
  margin-top: 0 !important
  margin: 0 !important
  width: 303px !important

.footer
  background-color: #343434
  font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
  height: 483px
  z-index: 1010
  padding-bottom: 5px
  border-bottom: 5px solid #EAEAEA
  .footer__border-block
    border-bottom: 4px solid #000000
    div
      position: relative
    .page-wrap
      height: 483px
      .grid-horizontal
        get_grid_horizontal()
        height: 2px
        margin-left: 0px
        width: 334px
      .grid, .grid-bottom
        margin-left: -17px
        position: absolute
        width: 959px
      .grid
        height: 484px
        border-left: 1px solid #5C5C5C
        border-right: 1px solid #5C5C5C
      .grid-bottom
        bottom: 5px
        height: 41px
    .copyright
      color: #FFFFFF
      font-size: 15px
      margin-top: 17px
      text-align: center
      .years
        color: #878787
        padding-left: 3px
    .block
      float: left
      margin-right: 19px
      margin-top: 16px
      width: 284px
      .link.ideas-link
        background: url('/app/images/common_sprite.png') no-repeat 0 -579px
        &:hover
          background: url('/app/images/common_sprite.png') no-repeat 0 -558px
      .link.specials-link
        float: right
        margin-top: 17px

      .special
        display: block
        margin: 16px 0 6px
        margin-left: 20px
        .clear
          clear: left
        .name.single
          margin-left: 0
        .name
          color: #E8E8E8
          font-size: 13px
          margin-left: 80px
        .text
          color: #878787
          font-size: 12px
          height: 35px
          overflow: hidden

      .headline
        color: #FFFFFF
        font-size: 15px
        margin-bottom: 35px
        text-align: center
        text-shadow: 0 -1px 0 #0E0E0E
        .link
          font-size: inherit
          margin-bottom: 0
          padding-left: 0
      .link:hover
        color: #ffffff
      .link
        color: #E8E8E8
        display: block
        font-size: 13px
        margin-bottom: 19px
        padding-left: 23px
      .text
        color: #878787
        font-size: 13px
      .text.about
        margin-bottom: 30px
        text-indent: 12px
      .link.about-link
        margin-left: 1px
        padding-left: 21px
        background: url('/app/images/common_sprite.png') no-repeat 0 -251px
        &:hover
          background: url('/app/images/common_sprite.png') no-repeat 0 -230px
      .link.contact-link
        background: url('/app/images/common_sprite.png') no-repeat 0 -436px
        &:hover
          background: url('/app/images/common_sprite.png') no-repeat 0 -415px
      .link.agreement-link
        background: url('/app/images/common_sprite.png') no-repeat 0 -335px
        &:hover
          background: url('/app/images/common_sprite.png') no-repeat 0 -314px
      .link.agents-link
        background: url('/app/images/common_sprite.png') no-repeat 0 -293px
        &:hover
          background: url('/app/images/common_sprite.png') no-repeat 0 -272px
    .block.last
      margin-right: -18px