ribbon(bgcolor, color, height = 20px, fontSize = 10px, padding = 0 20px 0 30px)
    background: bgcolor;
    color: color;
    font-size: fontSize;
    font-weight: bold;
    left: 0;
    padding: padding;
    position: absolute;
    height: height;
    line-height: height;
    text-transform: uppercase;
    font-style: normal;

    &:after {
        border-color: $green transparent $green $green;
        border-style: solid;
        border-width: (height / 2);
        bottom: 0;
        content: " ";
        height: 0;
        position: absolute;
        right: - (height / 2);
        width: 0;
    }
