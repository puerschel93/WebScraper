@import './var'

article, aside, blockquote, body, button, code, dd, details, div, dl, dt, fieldset, figcaption, figure, footer, form, h1, h2, h3, h4, h5, h6, header, hgroup, hr, input, legend, li, menu, nav, ol, p, pre, section, td, textarea, th, ul
  margin 0
  padding 0

ul, ol
  list-style none

/* Link */
a
  color $link-color
  background transparent
  text-decoration none
  outline none
  cursor pointer
  transition color 0.3s ease

  &:hover
    color $link-hover-color

  &:active
    color $link-active-color

  &:hover, &:active
    outline 0
    text-decoration none

  &[disabled]
    color $link-disabled-color
    cursor not-allowed
    pointer-events none

code, kbd, pre, samp
  font-family Consolas, Menlo, Courier, monospace

/* Remove the clear button of a text input control in IE10+ */
input::-ms-clear, input::-ms-reveal
  display none

::selection
  background $color-primary
  color #fff

.grid-content
  border-radius 4px
  min-height 36px

.bg-purple-dark
  background #99a9bf

.bg-purple
  background #d3dce6

.bg-purple-light
  background #e5e9f2

.row-bg
  padding 10px 0
  background-color #f9fafc

.text-left
  text-align left

.text-right
  text-align right

for $i in (12 .. 24)
  .fs-{$i}
    font-size $i * 1px

for $i in (1 .. 5)
  .mt-{$i * 10}
    margin-top $i * 10px

  .mr-{$i * 10}
    margin-right $i * 10px

  .ml-{$i * 10}
    margin-left $i * 10px

  .mb-{$i * 10}
    margin-bottom $i * 10px

  .pl-{$i * 10}
    padding-left $i * 10px

  .pr-{$i * 10}
    padding-right $i * 10px

  .pt-{$i * 10}
    padding-top $i * 10px

  .pb-{$i * 10}
    padding-bottom $i * 10px