.general-title
	font-family: L
	font-size: 38px
	font-weight: normal
	margin-bottom: 70px
	line-height: 120%
	&-pink
		color: #FEE7E6;
	@media screen and (max-width 560px)
		font-size: 22px
		margin-bottom: 30px
.pre-title
	font-size: 24px
	font-weight: 300
	margin-bottom: 30px
	color: #ADADAD;
	@media screen and (max-width 560px)
		font-size: 20px
		margin-bottom: 20px
.general-text
	margin-bottom: 30px
	@media screen and (max-width 992px)
		margin-bottom: 20px
	@media screen and (max-width 560px)
		margin-bottom: 10px
.general-list-ul
	li
		list-style: none
		position relative
		padding-left: 38px
		margin-bottom: 60px
		&:before
			content: ''
			display block
			position absolute
			width 18px
			height: 18px
			border-radius: 50px
			background-color #48817B
			top 5px
			left 0
		@media screen and (max-width 560px)
			margin-bottom: 30px
			padding-left: 27px
			&:before
				width 12px
				height: 12px
	&-pink
		li
			color: #FEE7E6
			padding-left: 28px
			margin-bottom: 30px
			&:before
				width 13px
				height: 13px
				top 7px
				background-color: #FEE7E6
			@media screen and (max-width 560px)
				padding-left: 27px
				&:before
					width 12px
					height: 12px
					top 5px
.general-list-ol
	position relative
	color: #FEE7E6
	margin-bottom: 70px
	width 100%
	display table
	// margin-left: 24px
	@media screen and (max-width 560px)
		margin-bottom: 30px
	&-title
		position relative
		display table-cell
		width 45px
		// width 20px
		span
			display block
			font-family: L
			font-size: 38px
			font-weight: normal
			line-height: 45px
			position absolute
			top 0
			right 0
			@media screen and (max-width 560px)
				font-size: 30px
				line-height: 36px
		@media screen and (max-width 560px)
			width 35px
	&-text
		font-family: SUD
		padding-left: 15px
		display table-cell
		width calc(100% - 45px)
		@media screen and (max-width 560px)
			padding-left: 20px
	&-black
		.general-list-ol-title
			color #2B514D
		.general-list-ol-text
			color #000
.button
	@media screen and (max-width 386px)
		padding 17px 30px
		width 100%
		max-width 290px