body{
   background-color: #ededed important;
   /*文字强制换行*/
   word-break: break-all; 
}

body h2, body .h2 {
  margin-top: 0  !important
  margin-bottom: 0.875rem !important
}

body h3, body h4, body h5, body h6 {
    margin-top: 0 !important
    margin-bottom: 0.813rem !important
}

/*body宽度为900px*/
.max-width {
  max-width: 66.5rem !important;
}

/*表格，等长*/
.table-container table {
  table-layout: fixed;
  border-collapse: collapse;
  border-radius: 10px !important;
}
.table-container table td {
   border: 1px solid #aaa;
   padding: 5px 5px 5px 10px;
}
.table-container table thead tr {
   background-color: #666;
   border: 1px solid #555;
}
.table-container table thead tr th{
   border-left: 1px solid #555;
   padding: 5px 5px 5px 10px;
   color: #fff;
}
.table-container table tbody tr:nth-child(even) {
    background-color: #dedcd9;
}
.table-container table tbody tr:hover {
   background-color: #aaa;
}
.table-container table tbody tr:hover td{
   color: #fff;
}

/*缩小边距（代码框、li等）*/
ul, ol{
  margin-block-start: 0;
  margin-block-end: 0;
  padding-inline-start: 22px;
}










ol{
  padding-inline-start: 22px;
}

ul{
  padding-inline-start: 18px;
}

ul > li {
  padding-left: 4px;
}

ol > li, ul > li {
  margin-block-end: 1em !important;
}

ol > li > p, ul > li > p {
  margin-block-start: 0em;
}

/*缩小边距（代码框、li等）*/
.highlight {
  padding: 0px 0 !important;
}

.gutter,.code{
    padding: 0px 8px 0 !important;
}

/* 代码追加p尾巴 */
.highlight {
   margin-block-end: 1em !important;
}

/* 表格追加p尾巴 */
.table-container {
   margin-block-end: 1em !important;
}

/* 表格字体大小 */
body th {
   font-size: 14px;
}
body table {
   font-size: 14px;
}

/*图片固定宽度*/
article .content img, article .content video {
  width: 100% !important;
  max-width: none !important; 
}

/*滚动条背景透明*/
figure::-webkit-scrollbar {
  /*background-color: rgba(100, 1, 1, 0);*/
  height: 0px;
}


/*概要缩小边框*/
article .content blockquote {
  margin-block-start: 0;
  margin-inline-start: 0px;
  margin: 0 0 !important;
  padding: 0.5em 0 !important;
}

article .content blockquote a {
  color: #ab2251;
  background-image: linear-gradient(transparent, transparent 5px, #ab2251 5px, #ab2251);
}

article .content blockquote p {
   margin-block-end: 1em !important;
}

/*代码优化 100%宽度*/
.highlight {
   /*底部留下1rem距离*/
   margin: 0 0 1rem 0 !important; 
   width: 100% !important;
}

/*代码优化 去掉代码行数*/
.highlight td.gutter {
   display: none !important;
}
.highlight .code pre {
  font-size: 14px !important;
}

.content code {
  font-family: $font-family-body;
  border: 0;
  padding: 0 0;
  color: #d44375;
}

/*mermaid限制高度，居中*/
.mermaid {
  text-align: center;
}
/*时序图，字体去掉粗体*/
.mermaid .messageText {
  stroke: none !important;
}
/*表格沾满行*/
body table {
  display: table !important;
}

/*目录靠左对齐*/
#toc li {
  text-align: left !important;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  white-space: nowrap !important;
}

/*todo 隐藏二级目录*/
#toc {
  display: none !important;
}

/*h4 标题 粗体*/
body h4, body .h4 {
  color: #111;
  font-weight: bold;
}

/* 思维导图 修改你的模板css文件，添加全局样式 */
.mermaid {
  max-height: 200px;
  position: relative;
  overflow: hidden;

  &:after {
    content: 'Loading ...';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #1c1f20;
    color: #FFF;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
  }
}

.mermaid[data-processed] {
  max-height: none;
  overflow: auto;

  &:after {
    content: none;
  }
}

/* 数学公式样式优化*/
.mjx-chtml {
  font-size: 100% !important;
}

/*文章分类，统计，放在右边*/
.category-list-count {
  float: right;
}

/*段落直接空格优化*/
p {
   margin-block-start: 0;
}