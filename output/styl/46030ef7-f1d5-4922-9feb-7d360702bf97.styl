form.grid {

    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 2rem !important;
    width: 75%;
    margin: auto;

    & > div {

        width: 100%;

        &.input-textarea, &.input-your_name, &.submit, &.headings {
            grid-column-end: span 2;
            @media $small {
                grid-column-end: auto;
            }
        }

        &.submit {
            text-align: right;
        }
    }

    @media $medium {
        width: 90%;
    }

    @media $small {
        grid-template-columns: 1fr;
        width: 100%;
    }
}


label {
    font-size: 0.8rem;
    color: $text-black;
    display: block;
    margin-bottom: 0.3rem;
    margin-top: 1rem;

    @media $small {
        font-size: 1rem;
        color: $text-black;
        margin-bottom: 0;
    }

    &.checkbox {
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        padding-top: 0.4rem;
        margin-bottom: 0;

        p {
            flex: 1;
        }
    }
}

input, select, textarea {

    height: $input-height;
    border-radius: $border-radius;

    &.rounded {
        border-radius: $border-radius;
    }
    &.border {
        border: 1px solid $color-light-grey2;
    }
    &.underline {
        background: none;
        text-decoration: none !important;
        border-bottom: 1px solid $color-light-grey;
        padding: 0 !important;
        height: 3.5rem !important;
    }
}

textarea {
    min-height: 8rem;
}

select {
    background-image: url('/images/dashboard-icons/Icon-ArrowDown.svg');
    background-position: right 1rem center;
    background-repeat: no-repeat;
    background-size: 1rem
}

