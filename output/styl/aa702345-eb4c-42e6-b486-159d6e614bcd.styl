// Menu responsive
.responsive-logo
	padding 25px
	width 80%
	display block
	background white
	img
		display block
		width 100%
		height auto

.menu-overlay
	position fixed
	top 0
	left 0
	background-color black
	z-index -1
	width 100%
	height 100%
	opacity 0
	cursor pointer
	transition all 0.45s ease
	&.active
		// z-index 1000
		z-index 99
		opacity 0.8
	&.z99999
		z-index 1021
		
.menu-mobile-close, .menu-mobile-open
	background-color c-1
	border-radius 7%
	color white
	cursor pointer
	font-size 28px
	height 42px
	line-height 42px
	position fixed
	right 5px
	text-align center
	top 12px
	transition all 0.45s ease
	width 42px
	transform rotate(0deg)
.menu-mobile-open
	opacity 1
	visibility hidden
	z-index 1002
	transition .8s
	&.scrolling
		opacity 0.6
	&:hover
		opacity 1
	&.active
		visibility hidden
		opacity 0
		right 255px
		z-index 1000
		transform rotate(-90deg)
	&.bottom
		top 108px
.menu-mobile-close
	visibility hidden
	opacity 0
	z-index 1000
	background white
	color c-1
	&.active
		visibility visible
		opacity 1
		right 255px
		z-index 1022
		transform rotate(-90deg)
