	.menu-link
		display table-cell
		width 2000px
		height 50px 
		vertical-align middle
		font-family t-0
		font-size 13px
		color #004998
		line-height 16px
		position relative
		text-align center
		transition-all()
		&.icon
			font-size 30px
		&.hamburguesa
			position relative
			top -5px
			&:after
				display none
			.icon-oc
				display inline-block
				height 5px
				width 28px
				background c-2
				position relative
				transition-all()
				&:after,
				&:before
					position absolute
					content ''
					left 0
					right 0
					background c-2
					height 100%
					width 100%
					transition-all()
				&:after
					bottom 155%
				&:before
					top 155%
			&.active
				.icon-oc
					background transparent
					width 23px
					height 4px
					&:after,
					&:before
						bottom 0
						top 0
						background-color c-1
					&:after
						transform rotateZ(-45deg)
					&:before
						transform rotateZ(45deg)	
		&:hover, &.active
			color c-2
			&:after
				width 100%								
			
