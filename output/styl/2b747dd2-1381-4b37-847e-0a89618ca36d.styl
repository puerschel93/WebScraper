.navbar
  background-color $col-grey
  height 148px
  border-bottom solid 1px $col-lignt-grey
  position relative
  +small()
    display none
  .kit-content-default
    width 100%
    max-width 960px
    margin 0 auto
    position relative
    left 0
    top 0
    
    .top-nav-links-block
      float right
      margin-top 15px
      margin-right 20px
      display inline-block
      height 27px
      line-height 27px
      
      .main-nav-links
        float left
        display inline-block
        
        a.sub-link
          float left
          line-height 27px
          height 27px
          display inline-block
          font-size .825em
          font-weight 400
          font-style normal
          cursor pointer
          color $col-black
          text-decoration none
        a:hover
          text-decoration underline
          
        .separator
          display inline-block
          float left
          width 20px
          height 20px
          background url(../img/nav-separator.png) center 7px no-repeat
          
      a.language-global
        background url(../img/global.png) left 3px no-repeat
        padding 2px 10px 5px 30px
        float right
        height 27px
        line-height 27px
        min-width 36px
        display inline-block
        color #0068A8
        text-decoration none
        margin-left 20px
        font-size 13px
        
      form
        position relative
        margin-left 8px
        display inline-block
        float right
        width 158px
        height 27px
        line-height 27px
        background-color transparent
        font-size .825em
        border 1px solid #b3b3be
        min-width 158px
        
        input
          position absolute
          left 0
          display inline-block
          border none
          height 25px
          line-height 25px
          background-color transparent
          outline 0
          padding 0 30px 0 5px
          color $col-black
          width 100%
          
        button
          position absolute
          height 25px
          width 25px
          right 0
          z-index 1
          outline 0
          border none
          background url(../img/nav-search.png) right center no-repeat
      
      .language-div
        border 1px solid #b3b3b3
        background $col-grey
        padding 30px 15px 25px 30px
        position absolute
        top 54px
        right 10px
        font-size 11px
        line-height 13px
        z-index 1
        min-width 210px
        display none
        
        .lang-title
          font-size 14px
          font-weight 400
          color $col-black
          font-family "Whitney SSm A", sans-serif
          line-height 13px
          
        .lang-close
          background url(../img/close.png) no-repeat
          height 14px
          width 14px
          display block
          float right
          margin-right 5px
          cursor pointer
          
        .language-global
          background url(../img/global.png) left 5px no-repeat
          padding 8px 10px 5px 30px
          height 27px
          line-height 17px
          color $col-aa-blue
          margin 14px 0 22px
          text-transform uppercase
          
          a 
            color $col-aa-blue
            text-decoration none
            
          a:hover 
            text-decoration underline
          
        .regional-sites
          padding-bottom 17px
          font-weight 400
          
        ul
          width 279px
          li
            list-style none
            padding 0 0 13px
            
            a
              text-decoration none
              color $col-black!important
              padding-left 0!important
              padding-right 0!important
              height auto!important
              line-height 13px!important
              display list-item
              
            a.f-l-w-50
              float left
              width 50%
            
            a.f-l-w-33
              float left
              width 33%
              
            a:hover
              color $col-blue
              text-decoration underline
              
          li:after
            content " "
            clear both
            display block
          
    a.logo
      display inline-block
      float left
      margin-left 20px
      padding-top 25px
      cursor pointer
      
    .links-container
      display inline-block
      position relative
      left 0
      bottom 0
      text-align center
      width 100%
      
      .nav-menu
        width 12.5%
        padding 15px 0
        display inline-block
        float left
        position relative
        
        a
          padding 0
          width 100%
          text-align left
          text-transform uppercase
          display inline-block
          font-size .825em
          font-weight 400
          font-style normal
          text-decoration none
          float left
          color $col-black
        
        a:hover
          font-weight 700
          color $col-blue
          text-decoration underline
          
        a.selected
          font-weight 700
          color $col-blue
          
        .drop-down
          width 190px
          padding 15px 10px
          position absolute
          left -10px
          top 40px
          border 1px #e8e8e8 solid
          background $col-white
          display none
          z-index 11
          
          a
            width 100%
            text-align left
            text-transform uppercase
            font-size .825em
            font-weight 400
            line-height 24px
            
        .arrow-down
          width 14px
          height 30px
          background url(../img/drop-down-arrow-down.jpg) left center no-repeat
          position absolute
          right 35px
          top 9px
          display inline-block
          z-index 10
          cursor pointer
          
.sidebar
  display none
  position fixed
  overflow-y scroll
  top 0
  bottom 0
  left 0
  right 0
  z-index 1
  background $col-lignt-blue
  -webkit-overflow-scrolling touch
  padding-top 47px
  +small()
    display block
    
  .drop-down-mobile
    display none
    
  .side-shadow
    -moz-transition left ease-in-out .5s
    -webkit-transition left ease-in-out .5s
    -o-transition left ease-in-out .5s
    -ms-transition left ease-in-out .5s
    transition left ease-in-out .5s
    position fixed
    left 80%
    width 3px
    top -1000px
    bottom -1000px
    -moz-box-shadow -2px 0 6px $col-black
    -webkit-box-shadow -2px 0 6px $col-black
    -o-box-shadow -2px 0 6px $col-black
    -ms-box-shadow -2px 0 6px $col-black
    box-shadow -2px 0 6px $col-black
    z-index 3
    
  .separator
    width 100%
    height 1px
    background-color $col-lignt-greyblue
    
  a
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box
    display block
    width 100%
    padding-left 80px
    padding-right 25%
    color $col-fa-blue
    height 48px
    line-height 48px
    text-decoration none
    
  .language-outer
    background $col-grey
    padding 0
    margin 0
    
  .language-div-mobile
    background $col-grey
    padding 28px 15px 25px 30px
    max-width 280px
    font-size 11px
    line-height 13px
    min-width 210px
    z-index 999
    font-family "Whitney SSm A", sans-serif
    
    .lang-title
      font-size 14px
      font-weight 400
      color $col-black
      font-family "Whitney SSm A", sans-serif
      line-height 13px
    
    .language-global
      background url(../img/global.png) left 5px no-repeat
      padding 8px 10px 5px 30px
      height 26px
      color $col-aa-blue
      margin 14px 0 22px
      text-transform uppercase
      
      a 
        color $col-aa-blue
        text-transform uppercase
        text-decoration none
        padding-left 0
        line-height 13px
        height 13px
      
    .regional-sites
      padding-bottom 17px
      font-weight 400
      
    ul
      padding-bottom 30px
      overflow hidden
      
      li
        list-style none
        padding 0 0 13px
        
        a
          float left
          color $col-black
          display inline-block
          padding-left 0
          padding-right 0
          
        a.f-l-w-50
          width 50%
          
        a.f-l-w-33
          width 33%
          
      li:after
        content ' '
        clear both
        display block
    
.navbar-mobile
  transition left ease-in-out .5s,top ease-in-out .3s
  position fixed
  top 0
  left 0
  right 0
  min-height 46px
  width 100%
  background-color $col-d9-grey
  border 1px solid $col-c4-grey
  z-index 2
  overflow hidden
  display none
  +small()
    display block
    
  form
    width 100%
    height 46px
    margin 0
    display none
    
    input
      -moz-box-sizing border-box
      -webkit-box-sizing border-box
      -o-box-sizing border-box
      -ms-box-sizing border-box
      box-sizing border-box
      background-color transparent
      padding 0 10px
      line-height 46px
      width 100%
      height 46px
      border none
      margin 0
      -moz-box-shadow none
      -webkit-box-shadow none
      -o-box-shadow none
      -ms-box-shadow none
      box-shadow none
      outline none
      
  .active-d-b
    display block
      
  .navbar-mobile-container
    position relative
    height 46px
    
    a
      position absolute
      left 46px
      top 0
      display inline-block
      -moz-box-sizing border-box
      -webkit-box-sizing border-box
      -o-box-sizing border-box
      -ms-box-sizing border-box
      box-sizing border-box
      height 46px
      text-align center
      z-index 2
      border-top solid 1px $col-c4-grey
      right 46px
      
      img
        height 100%
        width 115px
    
    .sidebar-display
      -moz-transition all .3s ease
      -webkit-transition all .3s ease
      -o-transition all .3s ease
      -ms-transition all .3s ease
      transition all .3s ease
      z-index 3
      position absolute
      height 46px
      width 46px
      left 0
      display inline-block
      background url(../img/navbar-mobile-side.png) center center no-repeat
      border-right solid 1px $col-c4-grey
      border-top solid 1px $col-c4-grey
      cursor pointer
      
    .sidebar-search
      position absolute
      height 46px
      width 46px
      right 0
      z-index 3
      display inline-block
      background url(../img/navbar-mobile-search.png) center center no-repeat
      border-left solid 1px $col-c4-grey
      cursor pointer
    
    .sidebar-search-changebg
      background url(../img/navbar-mobile-search-close.png) center center no-repeat

.active-l-80
  left 80%
  -moz-transition all .3s ease
  -webkit-transition all .3s ease
  -o-transition all .3s ease
  -ms-transition all .3s ease
  transition all .3s ease