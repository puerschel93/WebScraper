.mobile-menu
	background-color white
	color black
	width 200px
	padding 20px
	position fixed
	right 0
	top 0
	min-height 100%
	overflow auto
	transition transform 0.3s
	transform translateX(100%)
	&.active
		transform translateX(0)
	+above(880px)
		display none
	a, span
		font-weight 700
		text-transform uppercase
		text-decoration none
		display block
		margin 10px 0
		font-size 1.3rem
		&:first-child
			margin-top 0
	span
		color white

.field
	height: 40px
	display: block
	width: 100%
	padding-left: 20px
	padding-right: 20px
	background-color: rgba(white, 0.7)
	border: 1px solid #8b8ba6
	margin 10px 0
	&::placeholder
		color #213452
	&-text
		resize none
		height: 100px
		padding-top: 10px
	&-user
		background: url(../images/icons/user.png) no-repeat right 10px center
	&-phone
		background: url(../images/icons/phone.png) no-repeat right 10px center
	&-address
		background: url(../images/icons/marker-pixel.png) no-repeat right 12px center
	&-mail
		background: url(../images/icons/mail.png) no-repeat right 10px center
	&-text
		padding-top: 13px
	&-fly
		background: url(../images/icons/paper-plane.png) no-repeat right 10px top 12px
	&:focus
		border-color: gray
		outline none

.fadeInUp
	animation fadeInUp

.animated
	animation-fill-mode both

.fp-background
	background url("../images/main-bg.jpg") no-repeat center / cover
	position: fixed
	left 0
	top 0
	width: 100%
	height: 100%
	z-index: -100

address
	font-style: normal

.heading
	font-size 1.2rem
	text-align: center
	text-transform: uppercase
	line-height: 1.5
	padding 15px 0
	margin-bottom: 45px
	position: relative
	&:before, &:after
		content ''
		width: 230px
		height: 1px
		background-color: $dark-blue
		position: absolute
		left 50%
		top 0
		margin-left: -115px
		transition all 0.3s
	&:after
		top auto
		bottom 0
	+above($screen-sm)
		font-size 1.846rem


.amount-input
	width 100px
	height 26px
	text-align center
	position relative
	margin: 0 auto
	&-sub, &-add
		height 100%
		width 26px
		top 0
		left 0
		border 1px solid #d3d6dc
		position absolute
		background: white url("../images/icons/arr-pixel-left.png") no-repeat center
		transition all 0.3s
		&:hover
			background-color: #e4e3f5
	&-add
		left auto
		right 0
		background: white url("../images/icons/arr-pixel-right.png") no-repeat center
	.field
		width 100%
		height 26px
		text-align center
		border-color #d3d6dc
		padding 0
		margin: 0

.col-inline
	display: inline-block
	vertical-align: middle
	margin-right: -2px

.ruble
	font-family: 'PT Sans', sans-serif
	font-style: normal

.price
	text-align: center

.order-table
	.order-link
		margin-bottom: 15px
		font-weight: 700
		text-decoration: none
	.order-item-text
		line-height: 1.5
		margin-bottom: 20px
	.price
		font-size: 1.2rem
		font-weight: 400
	.order-img
		display: block
		text-align: center
	tbody
		tr
			border-bottom: 1px solid #e4e5e9
			height: 185px
			margin-bottom: 30px
	th
		text-align: center
		text-transform: uppercase
		padding-bottom: 10px
		font-size 1.385rem
		&:first-child
			text-align: left
			padding-left: 10px

	+between(0, $screen-sm)
		thead
			display: none
		table, tbody, tr, td
			display: block
		tbody tr
			clearfix()
			margin-bottom: 40px
			border none
			height auto
		td
			padding: 0
			float: left
		.order-img
			border 1px solid #e9eaed
			width: 100%
			text-align: center
			padding 20px
			margin-bottom: 20px
			display: inline-block
		.price
			margin-top: 5px
			text-align: center
		.remove
			margin-top: 6px
	+above($screen-sm)
		.col-inline, td
			display: table-cell
			padding: 0
			float: none

.no-price
	font-size 1.846rem
	text-align: center

// DELIVERY

.delivery
	margin-top: 70px
	.heading
		margin-bottom: 30px
	.btn-submit
		margin-top: 30px

.order-delivery
	margin-bottom: 30px
	+above($screen-sm)
		margin-bottom: 0

.tab-pane
	padding 0 10px
	border-radius 3px
	margin-right: 5px
	border-color: #d5d8de
	margin-bottom: 20px
	font-weight: 700
	&.active
		box-shadow 1px 0 10px 0 rgba(black, 0.2)
		background: #e4e3f5
	&:last-of-type
		margin-right: 0
	+above($screen-sm)
		padding 0 12px
		margin-right: 12px
		&:last-of-type
			margin-right: 0
.delivery-type-caption
	text-transform: uppercase
	line-height: 1.5
	margin-top 0
	margin-bottom: 20px

.tab-content
	display: none
	&.active
		display: block

.field-row
	margin-left: -5px
	margin-right: -5px
	.field
		margin: 0
	> div
		padding-left: 5px
		padding-right: 5px

.heading-main
	margin-bottom: 40px


// CATEGORIES

.categories
	text-align: center
	+above($screen-sm)
		text-align: left
	.discount
		margin 30px 0
		display: none
		padding 0 15px
		+above($screen-sm)
			display: block
.category-block
	width: 230px
	border 1px solid #4c4c4c
	border-left: none
	border-right: none
	min-height: 180px
	vertical-align: top
	display: inline-block
	margin 10px 15px 10px 17px
	position: relative
	.category-img
		height: 135px
		display: block
		text-align: center
		font-size: 0
		&:before
			content ''
			height: 100%
			display: inline-block
			vertical-align: middle
		img
			vertical-align: middle
			display: inline-block
			max-width: 80%
			max-height: 80%
	.category-list
		padding: 0
		margin: 0
		list-style none
		text-align: center
		position: absolute
		width: 100%
		left 0
		bottom 15px
		z-index: 10
		> li
			position: relative
			&.no-subcats
				> a:after
					display: none
			&:hover
				> a
					font-weight: 700
			> a
				display: block
				width: 100%
				padding 0 35px 0 15px
				text-transform: uppercase
				text-decoration: none
				&.active:after
					transform rotate(-180deg)
				&:after
					content ''
					sprite($arr_down)
					position: absolute
					right 10px
					top 50%
					margin-top: -3px
					transition all 0.3s
		.submenu
			padding 20px 0
			list-style none
			position: absolute
			width: 100%
			margin: 20px 0 0 0
			background-color: #e4e3f5
			box-shadow inset 0 0 30px 0 rgba(black, 0.1)
			display: block
			transition visibility 0.3s, opacity 0.3 0.1s
			visibility: hidden
			opacity: 0
			&.active
				transition visibility 0.01s, opacity 0.3s 0.01s, margin-top 0.3s 0.01s
				opacity: 1
				visibility: visible
				margin-top 10px
			a
				display: block
				padding 15px 20px
				text-decoration: none
				text-align: center
				position: relative
				&:before, &:after
					content ''
					width: 28px
					height: 1px
					background-color: $dark-blue
					position: absolute
					left 50%
					top 0
					margin-left: -14px
					transition all 0.3s
					transform translateX(-100%)
					opacity: 0
				&:after
					top auto
					bottom 0
					transform translateX(100%)
				&:hover
					&:before, &:after
						opacity: 1
						transform none


.inputfile
	input
		width: 0.1px
		height: 0.1px
		opacity: 0
		overflow: hidden
		position: absolute
		z-index: -1
	.file-path
		margin-top: 10px
		display: block
		+above($screen-sm)
			display: inline-block
			vertical-align: middle
			width: 50%
			text-overflow ellipsis
			padding-left: 25px
			white-space: nowrap

.field-file
	width: 170px
	display: inline-block
	text-transform: uppercase
	font-size 0.923rem
	padding 0 12px 0 15px
	position: relative
	line-height: 40px
	cursor pointer
	margin: 0
	&:hover
		text-decoration: underline
	&:after
		content ''
		right 15px
		top 50%
		margin-top: -12px
		position: absolute
		sprite($arr_square_down)
