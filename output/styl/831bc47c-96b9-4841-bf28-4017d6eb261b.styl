html
	box-sizing border-box
	font-size: 12px
	position: relative
	min-height 100%
	+above($screen-sm)
		font-size: 13px

*, *:before, *:after
	box-sizing inherit

generateClasses($spritesheet_sprites)

body
	font-size 1rem
	font-family 'Helvetica Neue Cyr', sans-serif
	font-weight 400
	min-height: 570px
	color $dark-blue
	background: white
	margin-bottom: 75px
a
	text-decoration underline
	color inherit
	transition all 0.3s
	&:hover
		text-decoration none

.icon
	display inline-block
	vertical-align middle
	position relative
	background-color: transparent
	padding: 0
	border none
	&:before
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display block
		opacity: 0
		transition all 0.3s
	&:after
		content ''
		top 0
		left 0
		position: absolute
		opacity: 1
		transition all 0.3s
	+ span
		display inline-block
		vertical-align middle

img
	max-width 100%

.nav-trigger-wrap
	text-align: center
	float: right
	+above($screen-sm)
		display: none

.nav-trigger
	margin: 0 auto
	hamburger-generator()
	text-align center
	margin-top 15px
	position relative
	z-index 10
	&.active
		hamburger-animation()
	+above(880px)
		display none

.page-wrapper
	transition all 0.3s
	&.active
		transform translateX(-200px)

.colored-white
	color white

.container
	margin: 0 auto

.btn
	display: inline-block
	border 1px solid #8585a3
	color $dark-blue
	height: 40px
	line-height: 38px
	padding 0 20px
	text-decoration: none
	background-color: transparent
	transition all 0.3s
	text-transform: uppercase
	&:hover
		background-color: #e4e3f5
		color #213452
	&-transparent
		background-color: rgba(white, 0.7)
	&-cart
		padding-right: 50px
		text-transform: uppercase
		position: relative
		&:before
			sprite($cart_blue)
			content ''
			position: absolute
			right 15px
			top 50%
			margin-top: -10px
	&-submit
		width: 116px
		margin: 0 auto
		display: block
		text-transform: uppercase
		font-weight: 700
		line-height: 40px
	&-blue
		color #e4e3f5
		background-color: $dark-blue
		&.btn-cart
			&:hover
				&:before
					background-image: url(../images/icons/cart-blue.png)
			&:before
				background: url(../images/icons/cart-secondary.png) no-repeat center
				width: 20px
				height: 20px
				right 10px

.index-page
	margin-bottom: 0

.index-page .btn
	color white
	border-color white
	&:hover
		background-color: #fff
		color $dark-blue

