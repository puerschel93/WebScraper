.b-catalog
	border-bottom 1px solid $backFont
	@media $phone
		background $white
		position fixed
		top 0
		bottom 0
		left 0
		right 0
		z-index 15
		padding 0 15px 50px
		border-bottom none
		overflow hidden
		overflow-y scroll
		display none
		&.is-open
			display block
			//opacity 0.5
	&__wrapper
		border-top 1px solid $backFont
		padding 0
		@media $phone
			border-top none
			border-bottom 1px solid $backFont
		&--other
			@media $phone
				height 77px
				border-bottom none
		&--mobile
			display none
			@media $phone
				display block
		&--mobile-controls
			position fixed
			left 0
			right 0
			top 0
			z-index 15
			display none
			padding 0 15px
			height 57px
			align-items center
			background $white
			box-shadow 0px 4px 10px rgba(0, 0, 0, 0.15)
			border-bottom none
			@media $phone
				display flex
	&__close
		position absolute
		right 16px
		top 19px
		width 19px
		height 19px
		align-items center
		cursor pointer
		display flex
		span
			position relative
			display block
			width 19px
			height 2px
			&:after, &:before
				content ''
				position absolute
				left 0
				right 0
				top 0
				height 2px
				background $brown
				transform rotate(45deg)
			&:before
				transform rotate(-45deg)
	&__menu
		padding 14px 0
		min-height 208px
		@media $phone
			min-height 0
			display none
	&__menu-item
		display block
		font-size 16px
		line-height 1.5
		padding 5px 0
		a, a:active
			color $baseFont
			transition color 0.1s
			&:hover
				color $hoverFont
	&__button
		height 29px
		border 1px solid $orange
		background $orange
		border-radius 3px
		font-size 14px
		line-height 27px
		padding 0 15px
		margin-right 10px
		text-align center
		color $white
		cursor pointer
		&--white
			border 1px solid $orange
			background $white
			color $hoverFont

.b-catalog-filter
	&__title
		position relative
		font-size 16px
		line-height 1.5
		text-transform uppercase
		padding 24px 24px 24px 0
		cursor pointer
		@media $phone
			padding 15px 24px 15px 0
		&:after
			content ''
			position absolute
			right 5px
			top 50%
			transform translateY(-50%) rotate(-45deg)
			width 10px
			height 10px
			border-left 1px solid $baseFont
			border-bottom 1px solid $baseFont
	&__search
		padding 1px 0 20px
		@media $phone
			padding-bottom 15px
	&__list
		padding 9px 0
		&--limit
			max-height 334px
			overflow hidden
			overflow-y scroll
			border-bottom 1px solid $backFont
	&__button
		background $gray
		border-radius 5px
		color $white
		font-size 16px
		line-height 40px
		letter-spacing -0.015em
		text-align center
		margin-top 37px
		height 39px
		cursor pointer
		transition background 0.1s
		@media $phone
			display none
		&:hover
			background $orange
	&__box
		padding-bottom 39px
		display none
		@media $phone
			padding-bottom 19px

	&.is-open &__title:after
		transform translateY(-50%) rotate(135deg)
		top calc(50% + 4px)
	&.is-open &__box
		display block
	&.is-active .b-catalog-filter__title
		color: $orange		

.b-filter-price
	max-width 290px
	&__wrapper
		display flex
		align-items center
		justify-content space-around
		padding 2px 0 27px
		//border-bottom 1px solid $backFont
		@media $phone
			border-bottom none
			padding-bottom 17px
	&__column
		display flex
		align-items center
		justify-content center
	&__text
		font-size 13px
		line-height 24px
		padding-right 8px
		letter-spacing -0.015em
		@media $desktop
			padding-right 4px
	&__rub
		font-size 18px
		line-height 24px
		padding-left 6px
		@media $desktop
			font-size 16px
			padding-left 4px

	&__column:nth-child(1) &__input
		width 79px
		@media $desktop
			width 67px
		@media $phone
			width 79px

	&__column:nth-child(2) &__input
		width 79px
		@media $desktop
			width 67px
		@media $phone
			width 79px

.b-catalog-table
	&__wrapper
		display flex
		justify-content flex-start
		flex-wrap wrap
		margin 0 -0.6666%
		@media $tablet
			margin 0 -0.5%
	&__item
		width 32%
		margin 0 0.6666%
		padding-bottom 2.5%
		@media $tablet
			width 49%
			margin 0 0.5%
			padding-bottom 2%
		@media $phone
			min-width 166px
		@media $phoneS
			min-width 0
	&__controls
		display flex
		justify-content space-between
		padding 13px 0
	&__more
		flex-grow 1
		text-align center
		padding-left 100px
		@media $phone
			padding-left 0
		span
			color $hoverFont
			cursor pointer
			font-size 16px
			line-height 1.5
			&:hover
				text-decoration underline
				@media $phone
					text-decoration none
	&__paginator
		float right

.b-paginator
	&__wrapper
		display flex
		padding 0
	&__pages
		display flex
		font-size 16px
		line-height 24px
		padding 0 23px
		cursor default
	&__current
		position relative
		padding-right 14px
		&:after
			content '/'
			position absolute
			right 4px
			top 0
	&__prev, &__next,
	&__prev-first, &__next-last,
		display block
		position relative
		width 12px
		height 24px
		cursor pointer
		padding 0 13px
		&:after, &:before
			content ''
			position absolute
			left 7px
			top 4px
			width 15px
			height 15px
			border-left 2px solid $baseFont
			border-bottom 2px solid $baseFont
			transform rotate(45deg)
		&.is-disabled
			cursor default
			&:after, &:before
				border-color $backFont
	&__next, &__next-last
		&:after, &:before
			transform rotate(225deg)
			left auto
			right 3px
	&__prev-first:before
		left 0px
	&__next-last:before
		left 1px


.b-brand-preview
	margin-top -50px

	@media $phone
		margin-top 0
	&__wrapper
		display flex
		padding-bottom 93px

		@media $phone
			flex-direction column
			padding-bottom 50px
	&__column
		width 210px
		padding-right 40px
		@media $phone
			padding-right 0
			width 100%
		p
			margin-bottom 20px
		&:last-child
			width calc(100% - 210px)
			@media $phone
				width 100%
		&-text
			position: relative
			overflow: hidden
			cursor: pointer
			transition: 1s
			@media $phone
				height: auto !important
			&.is-active
				overflow: inherit
				height: auto !important
				transition: 1s				
	&__logo
		border 1px solid $backFont
		width 170px
		height 134px
		display flex
		justify-content center
		align-items center
		@media $phone
			margin 0 auto 30px
		img
			max-width 100%
			max-height 100%
