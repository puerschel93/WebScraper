.b-filter-price__column--width
	&:nth-child(1)
		.b-filter-price__input
			width: 100%
	&:nth-child(2)
		.b-filter-price__input
			width: 100%
.b-filter-price--width
	padding: 0 5px
.b-filter-price__witdh-text
	padding-left 5px



.cloud-tag
	&__menu
		position: relative
		padding: 22px 0 12px 0
		border-top: solid 1px $backFont
		@media $phone
			border-top: none
			padding: 0
			margin: 0 -20px
	&__list
		position: relative
		display: flex
		align-items: center
		text-align: center
		flex-wrap: wrap
		height: 50px
		overflow: hidden
		// width: calc(100% - 125px)		
		&:after
			content: ' '
			display: none
			@media $phone
				content: ''
				display: block
				height: 15px
				flex: 0 0 10px
				max-width: 10px		
		@media $phone
			height: auto
			width: auto
			flex-wrap: nowrap
			overflow-x: scroll			
			padding: 0 20px
		&.is-child-hidden			
			padding-right: 105px	
		&.is-open
			height: auto
			padding-right: 0			
		&__item
			position: relative
			font-weight: 300
			font-size: 16px
			white-space: nowrap			
			margin-right 10px
			margin-bottom 10px	
			a
				color: $lightGray
				display: block
				border solid 1px $lightGray
				border-radius: 5px
				transition: 0.3s
				padding: 7px 13px
				&:hover
					color $orange
					border-color: $orange
	&__more-items
		display: none
		position: absolute
		top: 33px
		right: 0
		padding-right: 12px
		font-size: 13px
		color: $orange
		cursor pointer		
		@media $phone
			display: none
		span
			border-bottom: solid 1px $orange
		&:after
			position: absolute
			top: 6px
			right: 0
			content: ''
			width: 0
			height: 0
			border-left: 4px solid transparent
			border-right: 4px solid transparent
			border-top: 6px solid $orange	
	&__more-items_close
		display: none
		padding-right: 12px
		margin-bottom 10px
		font-size: 13px
		color: $orange
		cursor pointer
		margin-left auto
		position: relative
		//display: none
		@media $phone
			display: none
		span
			border-bottom: solid 1px $orange
		&:after
			position: absolute
			top: 6px
			right: 0
			content: ''
			width: 0
			height: 0
			border-left: 4px solid transparent
			border-right: 4px solid transparent
			border-bottom: 6px solid $orange
