//--------b-catalog__switch------//
.b-catalog__switch
	&:after
		display: none
.catalog-switch
	&__label
		display: flex
		justify-content: space-between
		align-items: center
	&__input
		appearance none
		-webkit-appearance: none
		-moz-appearance: none
	&__checked
		width: 45px
		height: 22px
		background: $gray
		border: solid 1px transparent
		display: block
		border-radius: 30px
		position: relative
		transition: 0.3s
		margin-right -24px
		// @media $phone
		// 	margin-right -24px
		&:after
			content: ''
			width: 18px
			height: 18px
			border-radius: 50%
			background: $white
			position: absolute
			left: 1px
			top: 1px
			transition: 0.6s
.catalog-switch__input:checked + .catalog-switch__checked::after
	left: calc(100% - 1px)
	transform: translateX(-100%)
.catalog-switch__input:checked + .catalog-switch__checked
	background: $orange

