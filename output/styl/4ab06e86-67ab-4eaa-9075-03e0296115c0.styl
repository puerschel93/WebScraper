#main
    display         flex
    flex-direction  column
    height          100%
    header
        h1
            background-image    url(/img/logo.svg)
            background-size     contain
            background-repeat   no-repeat
            font-size           1em
            padding-left        6em
            width               max-content
            margin              1em auto
.politic
     padding-top 3em
     border-radius: 0.5em;
     background-color white
     padding 2em
     h1,h2,h3
        font-size 1.2em

footer
    padding-top 3em
    text-align center
    background-color rgba(0,0,0,0.7)
    background-image    url(/img/watermark.png)
    background-size     contain
    height 15em
    color white
    width 100%
    background-repeat   no-repeat
    background-position   left

    
