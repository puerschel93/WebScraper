body
    font-family Roboto, Arial, sans-serif
    font-size 12px/**/
    width 100%
    background-image none /**/
.hide
    display none
#menu
        max-width 1280px
        margin auto
[v-cloak]
    display: none

#basket
    span
        cursor: pointer
    table
        position: absolute;
        width: 100%;/**/
        /*margin-left: -50em;/**/
        top 2em
        left 0
        background-color:
        rgba(255,255,255,0.9);
        z-index: 10;
        border-radius: 0.3em;
        font-size 1em
        border: 1em solid rgba(255,255,255,.01);
        tr
            /*border-bottom: 1px solid #333;/**/
            border-left: 1em solid lightgray;
            border-radius: 5px;
            border-right: 1em solid lightgray;
            &.noline
                background none
            td
                height: 3em;
                padding 0.3em
            .c3
                width 70%
            .c4
                width 30%/**/
            
        .img
            width:    20%
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
        .name
            pass
        .price,.summ
            font-size 1em
            background none
            color black
            width: 9em;
            text-align right
            &::before
                content ""
                font-size 0.8em
            &::after
                content " руб."
                font-size 0.8em
        .count
            text-align right
            width: 2em;
        .order
            margin 0
            float right
        .updw
            color blue
            font-size 1.5em
            teext-align left
            cursor: pointer
            .minus
                line-height: 0.5em;
                vertical-align: top;
                padding-top 0em
            .plus
                line-height: 0.5em;
                padding-bottom 0em
                vertical-align: bottom;
            span
                padding 0.5em
                &:hover
                    color red
        .itog
            text-align right
            &.sum
                &::after
                    content " руб."
                    font-size 0.8em
menu
    li
         list-style: none
         display inherit
         padding 0 0.5em
         font-size: 1.3em
    &.main_menu
         margin auto
         text-align center
    &.user_menu
         margin auto
         text-align center
         li
             margin: 0 0.5em;
             background-position: left center;
             background-size: contain;
             background-repeat: no-repeat;
             &.basket
                  padding-left 1.7em
                  width  auto
