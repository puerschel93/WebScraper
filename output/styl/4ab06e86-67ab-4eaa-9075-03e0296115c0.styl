.price
        background-image: url(/img/podlogkaRed.svg);
        background-position: center; 
        text-align: center;
        font-size: 2em;
        width: max-content;
        margin auto
        padding: 0.5em;
        background-size: 190% 190%;
        color: white;
        &::before
           content "цена: "
           font-size 0.8em
        &::after
           content " руб."
           font-size 0.8em
.order
        font-size: 2em;
        text-align: center;
        width: max-content;
        background-image: url(/img/podlogka.svg);
        background-position: center center;
        background-size: cover;
        box-shadow: 0 0 5px rgba(0,0,0,.5);
        padding: 0.5em 1em;
        margin 0 auto
        cursor: pointer
        &:hover
            box-shadow: 0 0 10px rgba(0,0,0,.5)/**/
.collection
    height   11em
    padding-top: 33em;
    background-image: url(/id/8667/orig_1.webp);
    background-size: cover;
    background-position: center center;
    border-radius: 0.5em;
    display none
    &:first-child
        display block
    .watermark
        position: absolute;
        height: 70%;
        float: right;
        display: block;
        top: 30%;
        right: 10%;
    .left,.right
           height: 5em;
           margin-top: -15em;
           border-radius 50%
           box-shadow: 0 0 5px rgba(0,0,0,0.5)/**/
           cursor: pointer
           &:hover
               box-shadow: 0 0 10px rgba(0,0,0,0.5)/**/
    .left
           float: right;
           margin-right: -2em;
    .right
           float: left;
           margin-left: -2em;
    h2
        text-align center
        font-size: 1.5em;
        margin: 0.5em auto;
        padding: 0.3em;
        width: max-content;
        background-image: url(/img/podlogka.svg);
        background-position: center;
        background-size: cover;
        max-width: 98%;
.deskription
        text-align center
        margin auto
        width 90%
        font-size: 1.2em;
        max-height: 4.5em;
        overflow: hidden;
        margin: 0.5em auto;
        padding: 0.3em;
        background-image: url(/img/podlogka.svg);
        background-position: center; 
        background-size: cover;
        dysplay: none
.imgFull
        position: fixed;
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(0,0,0,0.5)
        text-align center
        line-height 100%
        img
           height 80%
           margin-top: 5%;
