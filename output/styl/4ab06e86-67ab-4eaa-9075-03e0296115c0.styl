    body
    #main
        header
            h1
                font-size           2em

@media only screen and (min-width: 768px)
    body
    menu
        li
             list-style: none
             display inherit
             padding 0 0.5em
             font-size: 1.3em
        &.main_menu
             float: left
        &.user_menu
             float: right
    .order
        margin: 0 1em;
    .formOrder
         display block
         z-index 300
         padding 10%
         margin: 5%;
    collection,.collection img 
         height   40em
    #basket
        table
            top 2em
            left auto
            position: absolute;
            width: 50em;/**/
            margin-left: -50em;/**/
