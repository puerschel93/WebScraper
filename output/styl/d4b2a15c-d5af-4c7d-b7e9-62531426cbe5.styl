// Default vars

// Font Colors (all fields)
form-color-base ?= black
form-color-hover ?= form-color-base
form-color-focus ?= form-color-base
form-color-error ?= #ec1c23
form-color-error-hover ?= form-color-error
form-color-error-focus ?= form-color-error
form-label-base ?= black

// Background Colors (all fields)
form-bkg-base ?= transparent
form-bkg-hover ?= darken(form-bkg-base, 10%)
form-bkg-focus ?= darken(form-bkg-base, 15%)
form-bkg-error ?= form-bkg-base
form-bkg-error-hover ?= darken(form-bkg-error, 10%)
form-bkg-error-focus ?= darken(form-bkg-error, 15%)

// Outline Colors (all fields)
form-outline-base ?= form-color-base
form-outline-hover ?= darken(form-outline-base, 10%)
form-outline-focus ?= form-color-focus
form-outline-error ?= form-color-error
form-outline-error-hover ?= form-outline-error
form-outline-error-focus ?= form-outline-error

// Outline Style (all fields)
form-outline-width ?= 1px
form-outline-offset ?= 0px

// Animation (all fields)
form-base-speed ?= 200ms
form-easing-function ?= ease-out-quint

// Input & select fields
form-input-height ?= 60px
form-input-height-min ?= 50px
form-input-padding-h ?= 15px
form-input-padding-h-min ?= 12px
form-input-radius ?= 8px
form-input-label-above-padding ?= 5px // Padding between ".vf-label-above" and the input below it

// Checkbox
form-checkbox-size ?= 30px
form-checkbox-radius ?= 3px

// Tooltip (all fields)
form-tooltip-btn-w ?= 23px
