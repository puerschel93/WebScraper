      margin 0 auto
      text-align center
      margin-bottom 25px

      &.menu-item-1
        left auto
        top auto
        margin-top 100px
      &.menu-item-2
        left auto
        top auto
      &.menu-item-3
        left auto
        top auto
      &.menu-item-4
        left auto
        top auto
      &.menu-item-5
        left auto
        top auto
      &.menu-item-6
        left auto
        top auto

    .welcome-screen
      background rgba(0,0,0,0.7)

      .welcome-container

        .welcome-content
          padding 2em 2em
          background white
          border-radius 20px
          width 90%
          text-align left
          margin 0 auto

    .final-screen
      background rgba(0,0,0,0.7)

      .final-container

        .final-content
          padding 2em 2em
          background white
          border-radius 20px
          width 90%
          text-align left
          margin 0 auto

    .container-fluid
      height 100%


