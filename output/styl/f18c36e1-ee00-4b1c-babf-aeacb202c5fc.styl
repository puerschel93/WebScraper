@import '../../styles/index.styl';
body,html
  size(100%, 100%)
  background #000
  box-sizing: border-box
  #appbox
    width 100vw
    min-height 100vh
    background #000
    .topbox
      width 100%
      object-fit contain
    .welfarebox
      width 100vw
      background-image url('../../assets/tu_starplan/starplan_bg.png');
      background-size: 100%
      .welfarelist_logo
        text-align: center
        width: 375px
        .logowelfare_box
          width 211px
          object-fit: contain
      .listbox
        width: 100vw
        list-style: none
        margin-top: 10px
        .list_item
          float left
          margin-bottom 42px
          .commItem
            width: 120px
            height: 109px
        .first_listbox
          padding-left: 46px
          margin-right: 53px
        .third_listbox
          padding-left: 37px
          margin-right: 44px
          .commItem
            width: 138px
        &:after
          content: ''
          display block
          height 0
          clear both
      .becomstar_box
        text-align: center
        .becomstar_logo
          width: 252px
          object-fit: contain
      .works_countbox
        margin: 14px 12px
        position relative
        background-image url('../../assets/tu_starplan/startip_condition.png')
        background-size: 100%
        height: 60px
        width: 351px
        .desworks_count
          position: absolute
          font-size: 17px
          font-family: PingFangSCBold
          color: #FFF
          top: 18px
          left: 28px
        .works_count
          font-size: 14px
          font-family: PingFangSCBold
          color: #000
          position absolute
          top: 20px
          right: 43px
          &.special_right
            right: 48px
      .btn_application
        width: 100vw
        margin-top: 22px
        text-align: center
        .application_img
          width: 122px
          height: 49px
      .qa_box
        width: 100vw
        text-align: center
        margin-top: 46px
        .aq_logobox
          width: 172px
          object-fit: contain
    .desc_box
      width: 351px
      background: linear-gradient(180deg, #2A2A2A 0%, #181818 100%)
      border-radius: 8px
      margin: 0 12px 21px
      position relative
      padding: 14px 13px 15px
      box-sizing: border-box
      .tipstars
        width: 33px
        height: 32px
        position: absolute
        top: -8px
        right: 1px
      .title_box
        width: 323px
        height: 18px
        font-size: 16px
        color: #000
        font-family: PingFangSCBold
        font-weight: 500
        line-height: 18px
        padding: 2px 0 2px 2px
        background: linear-gradient(147deg, #83FBE3 0%, #00A0FC 34%, rgba(255, 255, 255, 0.74) 74%, rgba(106, 96, 254, 0) 100%)
      .desc_starbox
        font-size: 14px
        line-height: 22px
        color: #fff
        padding 8px 0 24px
    .phoneModal_box
      width: 375px
      height: 254px
      background: linear-gradient(180deg, #FFFFFF 0%, #FFFFFF 100%)
      border-radius: 20px 20px 0px 0px
      position fixed
      bottom 0
      z-index 2
      .close_icon
        position: absolute
        width: 18px
        height: 17px
        top: 9px
        right: 15px
      .phoneNumber_box
        width: 345px
        background: #F3F4F5
        border: none
        outline: none
        border-radius: 6px
        margin: 34px 15px 0
        padding: 12px
        font-size: 14px
        font-family: PingFangSC-Regular, PingFang SC
        font-weight: 400
        box-sizing: border-box
        &:placeholder-shown::placeholder
          color: #C3C4C5
      .verfiy_codebox
        display: flex
        width: 100vw
        padding-left: 15px
        box-sizing: border-box
        margin-top: 10px
        justify-content: flex-start
        align-items: center
        .verfiy_input
          width: 204px
          padding: 12px
          border: none
          outline: none
          font-size: 14px
          box-sizing: border-box
          background: #f3f4f5
          margin-right: 20px
          &:placeholder-shown::placeholder
            color: #c3c4c5
        .send_btn
          width: 122px
          height: 44px
        .count_downbox
          position relative
          text-align: center
          width: 122px
          height: 44px
          .down_count
            position: absolute
            top: 13px
            width: 100%
            font-size: 14px
            font-family: PingFangSCBold
            color: #FFFFFF
            line-height: 20px
            left: 50%
            transform: translateX(-50%)
      .bindpohne_btn
        width: 345px
        height: 44px
        margin-left: 15px
        margin-top: 30px
    .mask_box
      position: fixed
      top: 0
      left: 0
      bottom: 0
      right: 0
      width: 100vw
      height: 100vh
      background: #000
      opacity: 0.5
      z-index 1
    .fade-leave-to
       transform translate3d(0,254px,0)
    .fade-enter
       transform translate3d(0,254px,0)
    .fade-leave-active,.fade-enter-active
       transition: .5s all ease
        