body
  font-family Georgia, "Times New Roman", Times, serif
  color #555

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6
  margin-top 0
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight normal
  color #333

.blog-main
  h1, .h1,
  h2, .h2,
  h3, .h3,
  h4, .h4,
  h5, .h5,
  h6, .h6
    margin-top 25px

@media (min-width 1200px)
  .container
    width 970px

  .blog-masthead
    background-color #428bca
    box-shadow inset 0 -2px 5px rgba(0,0,0,.1)

.blog-nav-item
  position relative
  display inline-block
  padding 10px
  font-weight 500
  color #cdddeb

.blog-nav-item:hover,
.blog-nav-item:focus
  color #fff
  text-decoration none

.blog-nav
  .active
    color #fff
    &:after
      position absolute
      bottom 0
      left 50%
      width 0
      height 0
      margin-left -5px
      vertical-align middle
      content " "
      border-right 5px solid transparent
      border-bottom 5px solid
      border-left 5px solid transparent

.blog-header
  padding-top 20px
  padding-bottom 20px

.blog-title
  margin-bottom 0
  font-size 60px
  font-weight normal

.blog-main
  font-size 18px
  line-height 1.5

.sidebar-module
  padding 15px
  margin 0 -15px 15px

.sidebar-module-inset
  padding 15px
  background-color #f5f5f5
  border-radius 4px

.sidebar-module-inset p:last-child,
.sidebar-module-inset ul:last-child,
.sidebar-module-inset ol:last-child
  margin-bottom 0

.comments
  padding-top 30px

.pager
  margin-bottom 60px
  text-align left
  & > li
    & > a
      width 140px
      padding 10px 20px
      text-align center
      border-radius 30px

.blog-stubs.blog-index
  .date
    font-size 30px

    span
      font-size 22px

  .description
    font-size 16px
    color #7f7f7f

  .title
    font-size 22px

  .row.stub
    margin-bottom 25px

  .row.stub:last-child
    margin-bottom 0

.blog-post

  p, li, td
    letter-spacing 1px
    font-size 16px
    color darktext

  a
    color green
    cursor pointer
    font-weight bold

  a:hover
    text-decoration underline
    color darkgreen
    font-weight bold

  img
    max-width 100%

  .graph-01
    svg
      min-height 150px
      max-height 300px

  table
    margin 30px auto

    thead
      border-bottom 1px solid gray

    td, th
      padding 1px 9px
      letter-spacing 1px

    th
      color darkgray

.lead h2.blog-post-title
  margin-bottom 0
  padding-bottom 0

.blog-post-meta
  margin-bottom 20px
  color lightgray
  font-size 17px

.blog-footer
  padding 40px 0
  color lightgray
  text-align center
  background-color #f9f9f9

.blog-main pre
  background-color #002b36
  font-size 13px

.blog-main pre code
  color #93a1a1
  word-wrap initial
  white-space inherit

  span
    white-space nowrap

img, svg
  display block
  margin 0 auto

.blog-stubs

  overflow-x hidden

  &.index
    a.title
      min-height 48px

  a.title
    padding-left 0
    display block
    color green
    letter-spacing 1.2px
    font-size 18px

  .col-sm-6
    padding 0
    margin 10px 0

    a.title:hover
      color darkgreen
      text-decoration underline

    @media (max-width: 768px)
      .col-xs-9
        padding-right 25px
        padding-bottom 15px

      .col-xs-3
        padding-left 25px

  p.date
    text-align center
    color orange
    font-size 20px

    span
      display block
      color gray
      line-height 6px
      font-size 16px

@media (max-width: 660px)
  .blog-stubs, .blog-stubs.blog-index

    .row
      .title
        font-size 16px

      .description
        font-size 13px

      p.date
          font-size 15px
          padding-top 2px

        span
          font-size 14px
