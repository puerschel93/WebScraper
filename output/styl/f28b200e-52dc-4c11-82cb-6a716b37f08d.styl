.main 
	padding-top 0px
	padding-bottom 2rem
	&__slider
		width 100%
		&__slide
			position relative
			width 100%
			height 200px
			background-size cover
			background-position center center
			background-repeat no-repeat
			&__info
				padding-top 4rem
				padding-left 1.5rem
				padding-right 1.5rem	
				position absolute
				h1 
					color #fff
					font-weight	700
					text-shadow 1px 1px 2px rgba(0, 0, 0, .75)
				h4 
					text-shadow 1px 1px 2px rgba(0, 0, 0, .75)
				figure
					float left
					margin-right 1rem
				&--right 
					right 0
				&--left 
					left 0
	&__featured
		margin-top 2rem
		margin-bottom 2rem
