		flex-wrap wrap
		justify-content space-between
		position relative
		z-index 900
		
		&__item 
			width 100%
			margin-bottom 1.5rem
		
			&__link
				display block
				position relative
				text-align center
				color white
				transition all .5s ease-in
				
				&:hover
					.main__featured__item__caption
						top -20px
					
					.main__featured__item__description
						opacity 0	
						
			&__figure
				height 400px
				background-color gris
				overflow hidden
				position relative
			&__img
				position relative
				display block
				height 360px
				width 100%
				margin-top 44px
				background-position 50% 0
				background-size cover
				background-repeat no-repeat
			&__caption
				color white
				position absolute
				top 0
				border-top 5px solid gris
				width 100%
				padding 1rem
				transition all .5s ease
				
			&__title
				text-transform uppercase
				margin-bottom 5px
				font-size 1rem
				
			
			&__description
				margin 0
				line-height	24px
				transition all .5s ease		
