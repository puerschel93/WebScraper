body
  overflow: hidden;

body, a:hover, textarea, input
  cursor: url(/images/cursor.gif), url(/images/cursor.cur), default;
  font-family: 'Ubuntu', sans-serif;

div[ng-view]
  height: 100%;

  .bottom-panel
    height: 40px;
    display: flex;
    position: absolute;
    bottom: 0;
    width: 100%;
    background: linear-gradient(to bottom, #3D3D3D, #313131, #3E3D38);

    / .bottom-panel-item
      width: 120px;
      display: flex;
      flex-direction: row;
      align-self: center;
      margin: 0 5px;
      height: 35px;
      box-shadow: 0 1px 3px #000;
      background: transparent;
      border-radius: 3px;

      &.active
        box-shadow: 0px -1px 3px #000;

    / .panel-item-image
      background: url(/images/speechBubble.jpg);
      width: 30px;
      background-repeat: no-repeat;
      background-size: contain;
      height: 30px;
      margin: 0 10px;
      border-radius: 15px;
      align-self: center;

    / .panel-item-name
      flex-grow: 1;
      align-self: center;
      color: #ddd;

  .chat-wrapper
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;

    .chat-window
      max-width: 800px;
      width: 800px;
      flex-grow: 1;
      background: #F2F1F0;
      border-radius: 4px;

      &.hiddenChat
        display: none;

      .chat-header-wrapper
        background: linear-gradient(to bottom, #4B4A45, #464540, #3E3D38);
        position: relative;
        height: 20px;
        border-top-left-radius: 3px;
        border-top-right-radius: 3px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;

        .chat-window-name
          position: absolute;
          left: 10px;
          top: 1px;
          font-family: 'Ubuntu', sans-serif;
          font-weight: 500;
          color: #DFDBD2;
          font-size: 17px;

        .chat-control-buttons-wrapper
          position: absolute;
          right: 10px;
          top: 1px;
          display: flex;

          .chat-control-button
            width: 16px;
            height: 16px;
            background-repeat: no-repeat;
            background-size: initial;
            display: flex;
            cursor: pointer;

          /.chat-collapse
            background: url(/images/collapse.png);

          /.chat-expand
            background: url(/images/expand.png);

          /.chat-close
            background: url(/images/close.png);

      .chat-main-wrapper
        height: 500px;
        display: flex;
        flex-direction: row;

        .chat-users-online-layout
          width: 30%;
          background-color: #DDDDDD;
          flex-shrink: 0;
          min-width: 200px;
          display: flex;
          flex-direction: column;
          -webkit-user-select: none;
          -moz-user-select: none;
          -ms-user-select: none;
          user-select: none;

  .chat-users-online-header
    padding: 10px;
    font-size: 18px;

  .chat-users-online-list
    flex-grow: 1;
    margin-left: 25px;

    online-chat-user
      display: block;
      font-size: 1em;
      margin-top: 10px;
      position: relative;
      padding-left: 5px;
      height: 20px;
      line-height: 20px;

    /.current-user:before
      content: '';
      position: absolute;
      left: -20px;
      top: 0;
      width: 20px;
      height: 20px;
      display: block;
      background-repeat: no-repeat;
      background: url('data:image/png;base64,');
      background-size: contain;

  .chat-messages-layout
    flex-grow 1;
    display: flex;
    flex-direction: column;
    min-width: 350px;

    .chat-messages-wrapper
      flex-grow: 1;
      padding: 10px;
      overflow-y: scroll;

      chat-message
        display: block;
        margin-bottom: 10px;

        .chat-message-info
          margin: 0 10px 5px 0;
          font-weight: bold;
          color: #45443F;
          position: relative;

          &:after
            content: attr(data-time);
            position: absolute;
            right: 0;

        .chat-message-text
          word-wrap: break-word;
          padding: 5px 15px;
          background: rgba(186, 186, 191, 0.1);
          border-radius: 3px;

        / &.current-user-message
          .chat-message-text
            background: rgba(43, 43, 47, 0.1);

    .chat-type-wrapper
      flex-grow: 1;
      display: flex;
      max-height: 55px;

      .chat-type-area
        flex-grow: 1;
        padding: 5px;
        font-family: Ubuntu, sans-serif;
        font-size: 18px;
        border: none;
        margin: 0;
        resize: none;

      /:focus
        outline: none;