@require "../blocks/variables-n-mixins.styl"

.index-page-firstscreen-section {
  bg-image("../../img/bg-index-page-firstscreen.jpg")
  padding 50px 0
  height: 728px;

  &__title {
    max-width: 770px;
    font-family: "Proxima Nova Semibold";
    font-size: 50px

    .title__text {
      .text_color_primary {
        font-family: "Proxima Nova Black";
      }
    }

    .title__subtitle {
      margin-top: 10px
      .text_color_primary {
        font-family: "Proxima Nova Semibold";
      }

      .dash {
        margin: 0 10px 6px 0
      }
    }
  }

  &__btn.btn {
    margin: 48px 0 90px 0
    min-height: 73px;
    width: 326px;
    font-size: 21px
  }
}

.index-page-firstscreen-section-features {
  display: flex;
  justify-content space-between
  margin: 0 -32px 0 -32px

  &__item {
    margin: 0 32px 32px 32px
  }
}

.index-page-firstscreen-section-feature {
  &__title {
    font-family: "Proxima Nova Black";
    font-size: 35px;
    line-height: 29.85px;
  }

  &__subtitle {
    margin-top: 8px;
    font-size: 18px;
    line-height: 27.71px;
  }
}

.index-page-firstscreen-section-grid {
  display: flex;
  justify-content space-between
  align-items center
  height: 100%
}

.index-page-firstscreen-section-countries-card {
  padding 26px 36px 14px 36px
  width: 400px;
  box-shadow: 0 8px 13px rgba(43, 43, 43, 0.2);
  border-radius: 5px;
  border: 3px solid #686868;

  &__title {
    margin-bottom: 10px
    font-size: 23px;
  }
}

.index-page-firstscreen-section-countries {
  display: flex;
  align-items flex-start
  flex-direction column

  &__item {
    margin: 15px 0
  }
}


.index-page-firstscreen-section-country {
  &__icon {
    margin-right: 18px
    width: 37px;
    height: 37px;
  }

  &__text {
    font-size: 24px;
  }

  &:hover {
    .index-page-firstscreen-section-country__text {
      text-shadow: #ffffff 0.5px 0 0;
    }
  }
}

@media (max-width: 1350px) {
  .index-page-firstscreen-section-features {
    flex-wrap wrap
    margin: 0 16px 0 -16px

    &__item {
      margin: 0 16px 32px 16px
    }
  }
}

@media (max-width: 1250px) {
  .index-page-firstscreen-section {

    &__title.title {
      font-size: 45px
    }
  }

  .index-page-firstscreen-section-countries-card {
    padding: 20px 22px 10px 22px;
    width: auto;
  }

  .index-page-firstscreen-section-countries {
    &__item {
      margin: 13px 0
    }
  }
}

@media (max-width: 1150px) {
  .index-page-firstscreen-section {
    &__btn.btn {
      margin: 48px 0 60px 0;
    }
  }

  .index-page-firstscreen-section-features {
    justify-content center
    margin: 0 16px 0 0

    &__item {
      margin: 0 0 32px 0
      width: 43%
    }
  }
}

@media (max-width: 1050px) {
  .index-page-firstscreen-section {
    height: auto;

    &__title.title {
      text-align: center
      font-size: 40px

      .dash {
        margin: 0 10px 5px 0;
        width: 34px
        height: 2px
      }

      .title__subtitle {
        font-size: 20px;
      }
    }

    &__btn.btn {
      margin: 34px auto 50px auto;
      min-height: 60px;
      width: 300px;
      font-size: 19px;
    }

    &__right {
      margin-top: 18px;
    }
  }

  .index-page-firstscreen-section-grid {
    flex-direction column
  }

  .index-page-firstscreen-section-features {
    margin: 0;

    &__item {
      display: flex;
      flex-direction column
      justify-content center
      align-items center
      width: 35%;
      text-align center
    }
  }

  .index-page-firstscreen-section-feature {
    &__title {
      font-size: 28px;
      line-height: 29px;
    }

    &__subtitle {
      margin-top: 5px;
      font-size: 17px;
      line-height: 22px;
    }
  }

  .index-page-firstscreen-section-countries-card {
    &__title {
      font-size: 19px
    }
  }

  .index-page-firstscreen-section-countries {
    &__item {
      margin: 10px 0;
    }
  }

  .index-page-firstscreen-section-country {
    &__icon {
      margin-right: 15px;
      width: 30px;
      height: 30px;
    }

    &__text {
      font-size: 20px
    }

  }
}


@media (max-width: 600px) {
  .index-page-firstscreen-section {
    padding: 36px 0;

    &__title.title {
      font-size: 30px

      .dash {
        margin: 0 7px 4px 0;
        width: 28px
      }

      .title__subtitle {
        font-size: 18px;
      }
    }


    &__btn.btn {
      margin: 28px auto 42px auto;
      min-height: auto
      width: 250px;
      font-size: 16px;
    }

    //
    //  &__right {
    //    margin-top: 20px;
    //  }
  }

  //
  //.index-page-firstscreen-section-grid {
  //  flex-direction column
  //}
  //
  .index-page-firstscreen-section-features {
    &__item {
      width: 45%;
    }
  }

  .index-page-firstscreen-section-feature {
    &__title {
      font-size: 24px;
      line-height: unset
    }

    &__subtitle {
      margin-top: 2px;
      font-size: 15px;
      line-height: 18px;
    }
  }


  .index-page-firstscreen-section-countries-card {
    padding: 17px 17px 10px 17px;
    border-width 2px
    &__title {
      font-size: 17px
    }
  }

  .index-page-firstscreen-section-countries {
    &__item {
      margin: 9px 0;
    }
  }

  .index-page-firstscreen-section-country {
    &__icon {
      margin-right: 12px;
      width: 26px;
      height: 26px;
    }

    &__text {
      font-size: 18px
    }

  }
}

@media (max-width: 340px) {
  .index-page-firstscreen-section {

    &__title.title {
      font-size: 26px
    }
  }
}