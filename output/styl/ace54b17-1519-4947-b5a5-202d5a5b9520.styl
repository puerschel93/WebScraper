.header
  width: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  .buy_price
    display: flex
    align-items: center
    justify-content: space-between
    height:78px
    font-size: 28px
    color: rgba(51, 51, 51, 1)
    border-bottom:2px solid #EAEAEA
    .title
      line-height: 1
      color: #333
    .symbol
      line-height: 1
    .price
      line-height: 1
    .red
      color: #f9482e
.body
  padding: 0 24px
  .cell
    position: relative
    display flex
    justify-content space-between
    align-items center
    padding: 36px 0
    font-size: 28px
    color: #333
    .cell_title
      line-height: 40px
    .priceContainer
      display: flex
      align-items: center
    .cell_value
      display: flex
      align-items: center
      :global
        .at-input
          padding: 0
          margin: 0
        .cell_input
          line-height: 1
        .at-input::after
          display: none
        .container
          .weui-switch
            width:102px
            height:52px
    .grey_value
      flex: 0 0 auto
      line-height: 40px
      color: #b3b3b3
    .black_value
      color: #333
    .extra
      padding-left: 10px
    .cell_input
      flex: 1 1 auto
      line-height: 40px
      text-align: right
    .red_value
      line-height: 1
      color: #f9482e
.footer
  position: relative
  margin: 24px 24px 0
  padding: 36px
  background-color: #f8f8f8
  .triangle
    width: 0;
    height: 0;
    position: absolute
    top: -24px
    right: 32px
    border-left: 12px solid transparent
    border-right: 12px solid transparent
    border-bottom: 24px solid #f8f8f8
  .footer_cell
    line-height: 40px
    display: flex
    justify-content: space-between
    align-items: center
    color: #666
    font-size: 28px
    width: 100%
  .cell_label
    flex: 0 0 auto
    display: flex
    flex-direction: column
  .cellValue
    flex: 1 1 auto
    text-align: right
  .extra_margin
    margin-bottom: 24px
  .extra
    color: #999999
    font-size: 24px
  .extra_line_margin
    margin-bottom:24px
    border-bottom:2px solid #EBEBEB
    padding-bottom:24px
  .footer_extra
    line-height: 33px
    margin-top: 4px
    font-size: 24px
    color: #b3b3b3
.save_btn
  width:100%
  height: 152px
  display: flex
  justify-content: center
  align-items: center
  margin-bottom env(safe-area-inset-bottom)
  margin-bottom contant(safe-area-inset-bottom)
  .btn
