.h1, .h2, .h3
  font-weight 700

.h1
  font-size 2.4rem
  color $color-white
  +xl()
    font-size 4rem

.h2
  font-size 2rem
  color $purple-light
  +xl()
    font-size 3rem

.h3
  font-size 1.8rem
  color $purple-light
  +xl()
    font-size 2.4rem

.blue-title
  @extend .h2
  &--slashed
    position relative
    padding-left 45px


.white-title
  @extend .h2
  color $color-white

.slash
  display inline-block
  height 35px
  background-color: $main-green
  width 6px
  position absolute
  bottom: 5px
  left 15px
  transform: skew(-20deg)
  &:before,
  &:after
    content: ''
    position absolute
    width 3px
    height 100%
    background-color: $main-green
  &:before
    left -6px
  &:after
    right -6px
  &--
    &red
      background-color $red-3
      &:before,
      &:after
        background-color $red-3


.blue-light
  font-size 1.6rem
  font-weight 400
  color $light-blue
  +xl()
    text-align left
    font-size 2rem

.main-blue-text
  font-size 1.4rem
  font-weight 400
  color $purple-light
  +md()
    font-size 1.6rem
  +xl()
    font-size 1.8rem
  &--xl-fz16
    +xl()
      font-size 1.8rem



.white-small-text,
.white-text
  font-weight 400
  p
    margin-bottom 20px
  a
    text-decoration: underline
    color: $yellow
    &:hover
      text-decoration: none


.white-small-text
  font-weight 400
  font-size 1.2rem
  color #d0d1df
  margin 0
  +xl()
    font-size 1.4rem
    line-height 2

.white-text
  color $color-white
  font-size 1.4rem
  +xl()
    font-size 1.8rem


.tac
  text-align center

.taj
  text-align justify

.xs-tac
  text-align center
  +xl()
    text-align left

.md-tac
  text-align center
  +md()
    text-align left


.slide-container,
.admin-content
  @extend .main-blue-text
  a
    @extend .main-blue-text
    color $main-green
    text-decoration underline
    &:hover,
    &:focus
      text-decoration none
  h2,
  h3,
  h4
    color $purple-light
    margin 20px 0
  h2
    font-size 24px
  h3
    font-size 20px
    +lg()
      font-size 25px
  h4
    font-size 18px

  p
    color inherit
    margin-bottom 15px


.slide-container
  &--
    &white
      color $color-white !important
      a
        color $yellow


.slide-container,
.admin-content,
.blog-content__content,
.white-text
  ul,ol
    color inherit
    font-size 1.4rem
    margin-left 20px
    +md()
      font-size 1.6rem
    +xl()
      font-size 1.8rem
    li
      margin 10px 0

.slide-container,
.white-text
  ul
    li
      list-style disc


.error-content
  display flex
  flex-direction: column
  align-items center
  justify-content center
  height 100%
  p
    font-size 1.8rem
    font-weight 700
    color $light-blue
    margin-bottom 15px
    +xl()
      font-size 4rem


.list-wrapper
  padding 20px
  border 2px solid #ccc
  border-radius 5px
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.12)

.list-unstyled
  display flex
  flex-wrap: wrap
  li
    position relative
    font-size 1.4rem
    font-weight 500
    color $purple-light
    list-style-type none !important
    width 50%
    padding-left 10px
    +sm()
      width 33.3333%
    +md()
      width 25%
    +lg()
      width 20%
    &:before
      content: "â€¢"
      position absolute
      left 0
      top 3px
      font-size 25px
  a
    padding 10px
    color inherit
    display inline-block
    border-radius 5px
    &:hover,
    &:focus
      box-shadow: 0 0 15px rgba($purple-light, .8)

