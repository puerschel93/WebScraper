.quickview
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,.9)
    z-index: 99999

    option
        &:disabled
            display: none

    .disabled
        position: relative

        &:before
            content: ''
            position: absolute
            width: 100%
            height: 100%
            top: 0
            left: 0

            background: rgba(255,255,255, .5)
            z-index: 100

    .prices
        color: #000000
        font-size: 13px
        font-weight: 600
        margin: 20px 0

        > span
            display: block

    .to
        color: #b53c96
        font-size: 25px
        font-weight: 600
        letter-spacing: -.1px
        line-height: 1.2

    .payment
        color #787878
        font-size 13px
        font-weight 400

        span
            font-weight 700


    .variant
        label
            display: block
            font-size: 11px
            color: #a7a7a7
            margin: 8px 0

        select
            border: solid 1px #a7a7a7
            background: #ffffff
            width: 100%
            font-size: 11px
            color: #a7a7a7
            line-height: 30px
            height: 30px
            padding: 0 15px
            border-radius: 0


    &[aria-hidden=true]
        visibility: hidden
        opacity:0

        transition: all .2s ease-in-out


    &[aria-hidden=false]
        visibility: visible
        opacity: 1

        .quickview__container
            transform: translate(-50%, -50%) scale(1)
            visibility: visible
            opacity: 1

.quickview__container
    display: flex
    background: #ffffff
    border-radius: 3px;
    position: fixed
    top: 50%
    left: 50%
    overflow-y: auto

    padding: 40px

    max-height: 90vh
    max-width: 80vw
    visibility: hidden
    opacity: 0

    transform: translate(-50%, -50%) scale(.5)

    transition: all .3s ease-in-out

    @media(max-width: 992px)
        max-width: 100%
        max-height: 100%


    @media(max-width: 700px)
        height: 100%
        width: 100%
        flex-wrap: wrap


    @media(max-width: 440px)
        padding: 40px 0

.quickview__images
    height: 100%;
    margin: 0;
    max-height: 400px
    flex: 0 0 400px;
    width: 490px

    @media(max-width: 700px)
        max-width: calc(100% - 40px)
        flex: 0 0 calc(100% - 40px)

.quickview__image
    align-items: center
    display flex
    height: 320px
    justify-content center
    max-height: 320px;
    position: relative
    overflow: hidden

    img
        position: static
        width: auto
        max-width: 100%;
        max-height: 320px

.quickview__main
    min-width: 280px
    max-width: 100%
    margin: 0 20px

    @media(max-width: 700px)
        flex: 0 0 calc(100% - 40px)
        margin-top: 20px

.quickview__images--more
    margin: 20px 0

    img
        max-width: 50px
        cursor: pointer
        cursor: hand

    ul
        display: flex
        flex-wrap: wrap
        justify-content: center

    li
        list-style: none
        margin: 5px 10px

.quickview__button--close
    position: absolute
    top: 0
    right: 0
    padding: 0
    background: #fff
    border: 0
    width: 45px
    height: 45px

    display: flex
    justify-content: center
    align-items: center
    z-index: 10

    cursor: pointer
    cursor: hand

    svg
        width: 20px
        height: 20px
        fill: #dcdcdc
        position: relative
        z-index: 1

    &:hover
        background-color: transparent;

        svg
            fill #dcdcdc

    &:before
        content: ''
        position: absolute
        z-index: 2
        background: rgba(0,0,0,0)
        top: 0
        left: 0
        width: 100%
        height: 100%

.quckview__name
    color: #787878
    font-size: 25px
    font-weight: 400
    letter-spacing: -.1px;
    text-transform: uppercase;

.quickivew__sku
    margin: 0
    color: #a7a7a7
    font-size: 13px
    font-weight: 700
    letter-spacing: -.1px;
    margin-bottom: 10px;
    text-transform: uppercase

.quickview__small-description
    color: #787878;
    font-size: 13px;
    font-weight: 400;
    letter-spacing: -.1px;
    line-height 15px;

.quickview__qtd
    display: none

.quickview__button--addcart,
.quickview__button--finish
    align-items: center;
    border: #abd834;
    background: linear-gradient(to bottom, #bee03e 0%, #a6d531 100%);
    border-radius: 2px;
    color: white;
    display: flex;
    font-size: 13px;
    font-weight: 700;
    height: 44px;
    justify-content: center;
    letter-spacing: -.1px;
    line-height: 15px;
    padding: 10px 0;
    text-align: center;
    text-transform: uppercase;
    width: 220px;


    svg
        fill: white;
        height: 24px;
        margin-right: 5px;
        width: 19px;


.quickview__button--addcart:disabled
    background: #929292
    opacity: .5


.quickview__button--finish
    width: auto
    padding-right: 20px
    padding-left: 20px
    margin: 20px

    &:hover
        color: #ffffff

.quickview__link--more
    background: linear-gradient(to bottom, #f4f4f4 0%, #eaeaeb 100%);
    border: 1px solid #e9e9e9;
    color: #787878;
    display: inline-block;
    font-size: 11px
    font-weight: 700
    letter-spacing: -.1px;
    margin-top: 15px;
    text-transform: uppercase;
    padding: 5px 10px;

.quickview__button--continue
    background: #f7f7f7
    font-size: 11px
    font-weight: 600
    text-transform: uppercase
    line-height: 20px
    padding: 12px
    max-height: 44px
    flex 1 1 auto
    height: 44px;

    border-radius: 3px
    color: #929292
    border: 0
    margin: 20px

    cursor: pointer
    cursor: hand

    &:hover
        background: #929292
        color: #f7f7f7

.quickview__error, .quickview__unavailable
    padding: 20px
    font-size: 13px
    font-weight: 400
    background: #fe8b8b
    color: #fff

    margin: 20px 0

.button-quickview
    font-size: 11px
    color: #a89797
    position: absolute
    top: 20px
    right: 20px

    display: flex
    align-items: center

    background: none
    border: 0
    line-height: 1

    visibility: hidden
    opacity: 0

    transition: all .2s ease-in-out

    .icon svg
        fill:#cacaca
        width: 18px
        height: 18px
        margin-right: 5px
        position: relative
        z-index: 1


    &:before
        content: ''
        position: absolute
        z-index: 2
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: rgba(0,0,0,0)

    &:hover
        color: #000

        .icon svg
            fill: #000


.showcase ul li:hover
    .border
        background: #ffffff

    .button-quickview
        visibility: visible
        opacity: 1

.quickview--loaded
    overflow: hidden

.quckview__actions
    width: 100%
    text-align: center


// Variatian Open
.variant__title
    font-size: 14px
    font-weight: 700

.variants--open
    .variant
        display: flex
        flex-wrap: wrap

        margin: 5px -5px

.variants--open .variant__radio
    display: none

.variants--open .variant__label
    font-size: 14px
    line-height: 1
    padding: 10px 20px
    color: #2b2b2b

    border: solid 1px #2b2b2b
    border-radius: 2px

    display: inline-block
    margin: 5px

    cursor: pointer
    cursor: hand

    .variant__radio:checked + &,
    &:hover
        background: #2b2b2b
        color: #fff


.quickview--loaded
    overflow: auto

.quickview__finish
    max-width: 550px
    width 80vw

    .quckview__actions
        display flex

.variant__title
    color #c2c2c2
    font-size: 13px
    font-weight: 600
    letter-spacing: -.1px
    text-transform: uppercase

.variant__radio[type="radio"]
    margin-right 5px


.variant__label
    color #787878
    font-size 13px
    font-weight 600
    letter-spacing -.1px

.variants--radio
    margin-bottom 25px
