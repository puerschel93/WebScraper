.stories-page

  .main
    margin-bottom: 60px

    &__wrap
      position: relative

    &__info
      position: absolute
      left: 0
      right: 0
      bottom: 0
      background-color: alpha($gray_dark, 0.89)
      display: flex
      padding-bottom: 5px
      padding-top: 21px

      @media $tablet_small
        position: static
        background-color: $gray_dark
        flex-direction: column
        padding-bottom: 21px

    &__left
      width: 50%
      flex-shrink: 0
      padding-left: 49px

      @media $tablet
        padding-left: 20px

      @media $tablet_small
        width: 100%
        padding-right: 20px

    &__right
      width: 50%
      flex-shrink: 0
      padding-top: 6px

      @media $tablet
        padding-right: 20px

      @media $tablet_small
        width: 100%
        padding-left: 20px

    &__title
      margin-bottom: 2px

      font-family: 'Playfair'
      font-weight: bold
      font-size: 20px
      line-height: 28px
      letter-spacing: 0
      color: $brown_light

    &__meta
      display: flex

      text-transform: uppercase
      font-size: 14px
      line-height: 36px
      letter-spacing: 0
      color: $brown_light

    &__date
      margin-right: 46px

      &::before
        display: inline-block
        margin-right: 6px
        content: ''
        width: 14px
        height: 11px
        background-image: url('../img/general/stories-date.png')
        background-repeat: no-repeat
        background-size: cover
        background-position: center center

    &__photo

      &::before
        display: inline-block
        margin-right: 6px
        content: ''
        width: 14px
        height: 10px
        background-image: url('../img/general/stories-photo.png')
        background-repeat: no-repeat
        background-size: cover
        background-position: center center

    &__descr
      margin-left: -11px
      padding-right: 100px

      font-size: 14px
      line-height: 18px
      letter-spacing: 0
      color: $brown_light

      @media $tablet
        margin-left: 0
        padding-right: 0

  &__list
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    margin-bottom: 60px

  .story
    display: flex
    width: 50%
    margin-bottom: 61px
    max-width: 368px

    @media $tablet_small
      width: 100%
      max-width: none

    @media $phone
      flex-direction: column
      align-items: center

    &__image
      flex-shrink: 0
      width: 128px

      @media $phone
        margin-bottom: 20px

    &__text
      margin-top: -2px
      padding: 0 16px
      max-width: 260px

      @media $tablet_small
        max-width: none

      @media $phone
        padding: 0

    &__title
      max-width: 220px

      font-family: 'Playfair'
      font-weight: bold
      font-size: 18px
      line-height: 24px
      letter-spacing: 0
      color: $brown

      @media $tablet_small
        max-width: none

      a
        text-decoration: none

    &__date
      margin-bottom: -6px

      font-size: 14px
      line-height: 36px
      letter-spacing: 0
      color: alpha($gray, 41%)
      text-transform: uppercase

    &__descr
      font-size: 11px
      line-height: 16px
      letter-spacing: 0
      color: $gray

  &__btn
    margin-bottom: 145px

    text-align: center

    .button
      background-color: $white
      color: $blue
      border-color: $blue

      i
        background-image: url('../img/general/next-bold-blue.png')

      &:hover
        background-color: $blue
        color: $white
        border-color: $white

        i
          background-image: url('../img/general/next-bold-blue-light.png')


  .popup-story
    display: none
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    height: 100vh

    &__overlay
      background-color: rgba(0,0,0,.6)
      height: 100%
      display: flex
      align-items: center
      justify-content: center

    &__container
      max-width: 1040px
      width: 100%
      margin: 0 auto
      
    &__close
      position: absolute
      cursor: pointer
      top: 10px
      right: 10px
      background-image: url('../img/general/i-close-brown.png')
      width: 24px
      height: 24px
      background-repeat: no-repeat
      background-position: center center

    &__top
      position: relative
      background-color: $gray
      padding: 7px 48px

    &__title
      font-family: 'Playfair'
      font-weight: bold
      font-size: 20px
      line-height: 28px
      letter-spacing: 0
      color: $brown_light

    &__item
      display: flex
      align-items: center
      padding: 0 48px 25px
      background-color: $gray_dark2

      @media $tablet_small
        flex-direction: column

    &__image
      width: 656px
      height: 436px
      flex-shrink: 0

      @media $tablet
        width: 400px
        height: 280px

      @media $phone
        width: 100%
        height: 200px

      img
        width: 100%
        height: 100%
        object-fit: cover
        object-position: center

    &__descr
      margin-top: 20px
      max-height: 415px
      flex-grow: 1
      overflow-x: hidden
      padding: 0 21px 22px

      font-size: 14px
      line-height: 18px
      color: $brown_light

      @media $phone
        max-height: 150px

      .bold
        font-weight: bold
        
      .simplebar-track.simplebar-vertical 
        
        &::before
          content: ''
          display: block
          width: 1px
          height: 100%
          position: absolute
          top: 0
          bottom: 0
          left: 50%
          transform: translateX(-50%)
          background-color: #393939

      .simplebar-scrollbar
        background-color: $gray
        right: 3px
        width: 4px

        &::before
          content: none

    &__slider-wrap
      position: relative
      background-color: $gray_dark2

    &__slider-prev
      position: absolute
      cursor: pointer
      z-index: 10
      top: 50%
      left: 13px
      margin-top: -32px
      width: 20px
      height: 37px
      background-image: url('../img/general/story-slider-prev.png')
      background-repeat: no-repeat
      background-position: center center

    &__slider-next
      position: absolute
      cursor: pointer
      z-index: 10
      top: 50%
      right: 13px
      margin-top: -32px
      width: 20px
      height: 37px
      background-image: url('../img/general/story-slider-next.png')
      background-repeat: no-repeat
      background-position: center center

    &__legend
      background-color: $gray
      padding: 30px 48px

      @media $phone
        display: none


      img
        max-width: 80px
        box-sizing: border-box

      .slick-current
        img
          border: 2px solid $white


    .share
      display: flex
      padding: 5px 48px 30px
      background-color: $gray

      @media $phone
        flex-direction: column
        align-items: center

      &__list
        display: flex

      &__item
        margin-right: 19px

        &:last-child
          margin-right: 0

      &__text
        margin-right: 25px

        font-size: 14px
        line-height: 24px
        color: alpha($brown_light, .25)

        @media $phone
          margin-right: 0

.stories-archive-page

  &__heading
    position: relative
    margin-bottom: 103px

    @media $tablet_small
      margin-bottom: 40px

  &__selects
    display: flex
    justify-content: center
    margin-top: -24px
    margin-bottom: -31px

    @media $tablet_small
      flex-direction: column
      align-items: center
      margin-bottom: 30px


    .select2
      width: 228px !important
      margin: 0 10px

      @media $tablet_small
        margin-bottom: 10px

      .select2-selection
        width: 228px !important

  &__top-btn
    position: absolute
    top: -8px
    right: 16px

    @media $tablet_small
      position: static
      text-align: center

  &__list
    display: flex
    flex-wrap: wrap
    margin-bottom: 50px

    @media $tablet_small
      margin-bottom: 20px

  &__item
    width: calc((100% - 10px) / 3)

    @media $tablet_small
      width: calc((100% - 10px) / 2)

    @media $phone
      width: 100%


  .archive
    display: flex
    text-decoration: none
    margin-right: 5px
    margin-bottom: 70px

    @media $phone
      margin-right: 0
      margin-bottom: 40px

    &:nth-child(3n)
      margin-right: 0

      @media $tablet_small
        margin-right: 5px

        @media $phone
          margin-right: 0

    &:nth-child(even)
      margin-right: 0

    &__photo
      width: 80px
      height: 80px
      margin-right: 12px
      border-radius: 50%
      flex-shrink: 0

    &__text
      max-width: 150px

      @media $phone
        max-width: none

    &__name
      margin-bottom: -3px

      font-family: 'Playfair'
      font-size: 16px
      line-height: 18px
      letter-spacing: 0
      color: $brown
      font-weight: bold

    &__date
      text-transform: uppercase
      font-size: 12px
      line-height: 36px
      color: $gray

  .pagination
    margin-bottom: 120px

    @media $tablet_small
      margin-bottom: 40px