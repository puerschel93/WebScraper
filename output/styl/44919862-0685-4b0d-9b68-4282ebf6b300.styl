 * Author: Joao Guilherme Cheffer Prado
 * Date: 03/2016
 */

/* =============================================================================
  Local Variables
  ========================================================================== */

$logo-width = 170px
$logo-height = 40px
$ads-header-width = 720px
$ads-header-height = 90px
$ads-header-vertical-margin = 20px
$sub-menu-height = 30px

/* =============================================================================
	Header Style
   ========================================================================== */

.ads-header
  width remify($ads-header-width)
  height remify($ads-header-height)
  margin-top remify($ads-header-vertical-margin)
  margin-bottom remify($ads-header-vertical-margin)

header
  background-color $default-color-brand-typo-website
  width 100%
  height remify(80px)
  margin-bottom remify($sub-menu-height)
  .logo-url
    float left
    width remify($logo-width)
    height remify($logo-height)
    margin remify(20px) remify(10px)
  .logo-title
    height 100%
    background url('../../../../images/fw-logo.png') no-repeat
    background-size 100% 100%
    text-indent $text-visually-hidden

/* =============================================================================
	Nav Top Menu
   ========================================================================== */

.nav-top-menu
  position relative

.list-top-menu
  position relative
  float right
  display inline-block
  margin-right remify(10px)
  cursor default
  & > .item
    display inline-block
    height 100%
    vertical-align middle
    font-size remify(14px)
    padding 0 remify(9px)
    transition all .2s ease-in-out
    &:hover:not(.item-search), .selected
      background $default-color-text
      .nav-top-sub-menu
        opacity 1
        visibility visible
    & > a
      display block
      height 100%
      line-height remify(80px)
      text-transform uppercase
      &:not(.no-arrow):after
        content '❯'
        display inline-block
        margin-left remify(5px)
        transform rotateZ(90deg)
      &:hover
        color $white
    .subtitle
      display inline-block
    .search-text
      position relative
      padding 0 remify(5px)
      top 50%
      transform translateY(-50%)
    &.item-search
      width remify(100px)
      .search-text > input
        width 100%
        height remify(25px)
        font-weight 700
        font-size remify(8px)
        text-transform uppercase
      .icon-lookup
        background url('../../../../images/look-up.png') no-repeat
        width remify(20px)
        height remify(20px)
        position absolute
        right remify(10px)
        top remify(0px)
    &.carros .nav-top-sub-menu
      height remify(200px)
    &.testes
      .nav-top-sub-menu
        height remify(220px)
        .side-option
          background $lessofgray
          padding remify(20px) 0
          width 15%
    &.item-none .nav-top-sub-menu
      height remify(100px)
      padding-top remify(40px)
      text-align center
      
  

.nav-top-sub-menu
  position fixed
  opacity 0
  visibility hidden
  width 100%
  min-height remify(100px)
  background $default-color-text
  z-index 10
  left 0
  border-bottom remify(2px) solid $default-color-brand-typo-website
  transition all .2s ease-in-out
  &:hover
    opacity 1
    visibility visible
    & + a
      background $default-color-text
  .list-column
    height 100%
  .btn-list
    display block
    clear both
    height remify(30px)
    padding-top remify(6px)
    margin remify(5px) 0
    font-size remify(16px)
    text-align right
  .side-option
    display inline-block
    width 20%
    padding remify(30px) remify(10px)
    vertical-align top
    text-align center
    .btn-see-all-cars
      width 100%
  .list-models, .list-news
    display inline-block
    width 75%
    padding remify(20px)
    .item
      display inline-block
      text-align left
  .list-models
    .item
      width remify(140px)
      margin remify(10px) 0
  .list-news
    padding-top remify(30px)
    width 80%
    overflow hidden
    text-align center
    .item
      $width = 150px
      $_plus_img = 30px
      
      width remify($width)
      margin-left 1%
      vertical-align top
      cursor pointer
      transition opacity .1s ease-in-out
      &:first-child
        margin-left 0
      &.item-w-image
        width remify($width + $_plus_img)
        img
          width remify($width + $_plus_img)
          height remify(115px)
        figcaption
          margin-top remify(8px)
          font-size remify(16px)
          line-height remify(20px)
          font-weight 700
          white-space normal
      &:hover
        opacity 0.6
        a
          color $white
      .brief
        margin-top remify(15px)
        line-height remify(16px)
        white-space normal
        a
          color $red

.nav-items-more
  $width = $sub-menu-height
  
  display block
  clear both
  height remify($width)
  background $kindablack
  z-index 5
  overflow hidden
  white-space nowrap
  overflow-x visible !important
  .title
    color $white
    width remify(130px)
    height 100%
    background $kindared
    line-height remify($width)
    display inline-block
    font-size remify(15px)
    position relative
    text-transform uppercase
    cursor default
    text-align center
    &:after /*triangle*/
      width 0
      height 0
      content ''
      border-top remify(15px) solid transparent
      border-bottom remify(15px) solid transparent
      border-left remify(12px) solid $kindared
      position absolute
      right remify(-12px)
      top 0
  .items
    display inline-block
    margin-left remify($width)
    vertical-align middle
    .item
      display inline
      margin remify(0px) remify($width - 10px)
      font-size remify(12px)
      line-height remify($width)
      font-weight 700
      text-transform uppercase


/* =============================================================================
	Queries
   =========================================================================== */

@media $media-query-homepage-custom-1
  .list-top-menu
    & > .item
      &.item-search
        display none

@media $media-query-homepage-custom-2
  .js-search-text, .only-UT-tablet
    display none !important
  
  .only-GT-tablet
    display block
    &.arrow-right
      display inline

@media $media-query-homepage-custom-3
  header
    .logo-url
      left 50%
      position absolute
      transform translateX(-50%)
    .js-search-text
      clear both
      width 100%
      input
        position absolute
        height remify(30px)
        bottom remify(-30px)
        border 0
        z-index 15
        width 100%
  
  .only-UT-tablet
    display block !important
    position relative
    height 100%
    width remify(65px)
    &.selected
      background $kindared-mobile
    .icon
      position absolute
  .js-open-menu-search
    float left
    text-align center
    z-index 10
    .icon
      top remify(33px)
      background url('../../../../images/fw-lookup.png') no-repeat
      width remify(16px)
      height remify(16px)
      margin-left remify(-10px)
  .js-open-menu
    right 0
    height remify(80px)
    position absolute
    &.selected
      background $kindared-mobile
      span
        transform rotateZ(45deg)
        transform-origin center
        &:first-child
          transform rotateZ(-45deg)
          transform-origin 25px 6px
        &:last-child
          opacity 0
          transform-origin center
    .icon
      top remify(25px)
      right 0
      width remify(30px)
      margin-right remify(15px)
      pointer-events none
    span
      background-color #fff
      border-radius 2px
      content ''
      display block
      position relative
      width 100%
      height 4px
      margin remify(5px) 0
      transition all .2s ease-in-out

  .list-top-menu
    display none
    width 100%
    clear both
    z-index 20
    background $kindared-mobile
    margin 0
    position absolute
    top remify(80px)
    & > .item
      width 100%
      display block
      height auto !important
      min-height remify(50px)
      border-bottom remify(2px) solid $kindared-border
      &.selected
        padding-bottom remify(20px)
        background $default-color-text
        & > a:not(.no-arrow):after
          transform rotateZ(-90deg)
        .nav-top-sub-menu
          display block
          visibility visible
          opacity 1
      & > a
        line-height remify(80px)
      .nav-top-sub-menu
        display none
        width 100%
        position relative
        clear both
        margin-top remify(-20px)
        height remify(100px)
        border 0
      &.carros
        .nav-top-sub-menu
          height remify(130px)
          .side-option
            display none
          .list-models
            width 100%
            padding remify(5px) remify(15px)
            .item
              width remify(100px)
              margin remify(10px) 0
      &.testes
        .nav-top-sub-menu
          height remify(200px)
          .side-option
            width 100%
            background $default-color-text
            .btn-list
              text-align left
          .list-news
            display none
    

@media $media-query-tablet
  .ads-header
    width 90%

@media $media-query-mobile
  .ads-header
    max-width remify(300px)
    height remify(40px)