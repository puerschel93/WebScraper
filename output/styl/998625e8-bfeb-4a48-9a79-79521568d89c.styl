.bugs-page
  width 100%
  height 600px
  display flex
  justify-content center
  align-items flex-start
  @media screen and (max-width: 1024px)
    width 100%
    height 600px
    display flex
    justify-content flex-start
    align-items flex-start
  .half
    width 50%
    min-height 600px
    padding 0
    &:first-child
      border-right 2px dashed var(--dark-primary-color)
      @media screen and (max-width: 1024px)
        border-right 0
    #left
      width 100%
      height 100%
      .banner-container
        width 60%
        margin 0 auto
        height 130px
        position relative
        display flex
        justify-content flex-end
        align-items center
        background var(--custom-pink)
        border 1px solid var(--dark-custom-pink)
        box-shadow 3px 3px 5px var(--dark-custom-pink)
        @media screen and (max-width: 1024px)
          width 100%
        .content
          width 60%
          text-align center
          color var(--secondary-color)
        .icon
          width 100px
          height 100px
          display block
          position absolute
          left 10%
          top -10%
          background var(--secondary-color)
          .icon-img
            width 100px
            height 100px
            border 1px solid var(--dark-custom-pink)
            box-shadow 1px 1px 3px var(--dark-custom-pink)
      .search-component
        width 60%
        margin 20px auto
        display block
        .filter-text
          padding 6px 12px
          width 100%
          border 1px solid var(--custom-red)
          border-radius 4px
      .my-hive-list-container
        width 100%
        height 100%
        .my-hive-list
          display block
          max-height 380px
          overflow-x hidden
          overflow-y auto
          .my-hive
            display flex
            .letter-container-container
              display flex
              align-items center
              .letter-container
                width 100px
                height 100px
                border 5px solid var(--dark-primary-color)
                border-radius 50%
                display flex
                justify-content center
                align-items center
                position relative
                color var(--custom-red)
                margin 10px 0
                &:after
                  content: ' '
                  position absolute
                  display flex
                  justify-content center
                  align-items center
                  right -22px
                  border-top 18px solid transparent
                  border-left 20px solid var(--dark-primary-color)
                  border-right 0 solid var(--dark-primary-color)
                  border-bottom 18px solid transparent
                  z-index -1
            .small-circle-container
              padding-left 20px
              display flex
              justify-content center
              align-items center
              position relative
              .line
                position absolute
                display flex
                justify-content center
                align-items center
                border 1px solid var(--dark-primary-color)
                height 100%
                z-index 0
              .small-circle
                position relative
                width 25px
                height 25px
                border 2px solid var(--dark-primary-color)
                border-radius 50%
                background var(--secondary-color)
                z-index 1
            .dots-container
              display flex
              justify-content center
              align-items center
              .dots
                display flex
                justify-content center
                align-items center
                .dot
                  display block
                  border 1px solid var(--dark-primary-color)
                  margin 0 3px
            .names
              display block
              .name
                a
                  text-decoration none
                  color var(--custom-red)
                  &.selected
                    color var(--dark-primary-color)
    #right
      padding 0px 10px
      .profile-banner-container
        .buttons
          display flex
          justify-content flex-end
          align-items center
          margin 10px 0
          .button
            padding 6px 12px
            background var(--primary-color)
            color var(--secondary-color)
            border 1px solid var(--dark-primary-color)
            border-radius 4px
            box-shadow 1px 1px 3px var(--dark-primary-color)
            margin 0 5px
            cursor pointer
            &#pest
              background var(--black-color)
              border 1px solid var(--black-color)
              box-shadow 1px 1px 3px var(--black-color)
      .divider
        width 100%
        border 1px dashed var(--dark-primary-color)
        margin 15px 0
      .userPostsContainer
        margin 10px 0 0
        padding 0 10px
        max-height 350px
        overflow-y auto
