$ns = ".news-list"
$searchOverlaySpeed = $speed * 3

{$ns}
  padding-top 126px
  &__search
    margin-bottom 24px
    &-toggler
      position relative
    &-handler
      display inline-block
      vertical-align top
      position relative
      height 35px
      border-radius 17.5px
      box-shadow 3px 5px 14px rgba(#000, 0.06) 
      border 1px solid #fff
      background none
      color rgba(#000, 0.4) 
      text-transform uppercase
      letter-spacing 1.5px
      font-size 12px
      font-weight 600
      padding 0 18px 2px
      box-sizing border-box
      transition-property box-shadow, color, background-color, opacity, visibility
      transition-duration $speed
      .ico
        width 12px
        height 12px
        margin-right 2px
        svg
          transition none
      &-value
        display inline-block
        vertical-align middle
      &:hover
        color #000
        &:not(:active)
          box-shadow 3px 5px 20px rgba(#000, 0.15)
      &.-opened
        position absolute
        z-index 120
        top 0
        left 0
        opacity 0
        visibility hidden
        color #fff
        &:hover
          color #000
          background-color #fff 
    &-overlay
      position fixed
      z-index 110
      top 0
      left 0
      width 100% 
      height 100% 
      opacity 0
      visibility hidden
      background-color #160dfc 
      transition-property opacity, visibility 
      transition-duration $searchOverlaySpeed
      padding-top 281px
      box-sizing border-box
      &-form
        position relative
        opacity 0
        transform translateY(20px)
        transition-property transform, opacity
        transition-duration $searchOverlaySpeed 
        transition-delay $searchOverlaySpeed
        &-placeholder
          display block
          transition-property opacity, visibility 
          transition-duration $speed * 1.5
          transition-timing-function linear 
          +b($m)
            height 49px
        input
          display block
          position absolute
          left 0
          width 100% 
          border none
          background none
          color #fff 
          font-family $SharpSans
          font-weight 600  
          letter-spacing -0.25px 
          +a($m)
            height 120px
            font-size 90px
            top -30px
          +b($m)
            height 84px
            font-size 63px
            top -21px
        &.-filled &-placeholder
          visibility hidden
          opacity 0
        &.-filled + {$ns}__search-overlay-tip
            opacity 1
            transform none
      &-tip
        opacity 0
        transform translateY(20px)
        transition-property transform, opacity
        transition-duration $searchOverlaySpeed
        font-size 15px
        line-height 21px
        color rgba(#fff, 0.75)
        padding-top 31px
    &.-active &
      &-handler
        &.-closed
          opacity 0
          visibility hidden
        &.-opened
          opacity 1
          visibility visible
      &-overlay
        opacity 0.95 
        visibility visible
        &-form
          opacity 1
          transform none
  &__list
    +a($t)
      display flex
      flex-wrap wrap
      margin 0 -5px
    &-item
      margin-bottom 10px
      +b($t)
        width 100% 
  &__pinned,
  &__announcement
    background-repeat no-repeat
    +a($t)
      width 100%
      margin-right 5px
      margin-left 5px
  &__normal,
  &__social
    +a($t)
      width 33.33333%
      box-sizing border-box
      padding 0 5px
    span[class]
      display block
  &__pinned
    color #fff 
    +btw($t, $d)
      background-size 56.6142% auto
    +a($sd)
      min-height 600px
    +a($t)
      background-position right center
    +btw($m, $t)
      background-size auto 414px
      background-position 50% 14px
    +b($m)
      background-size auto 288px
      background-position 50% 20px
    a
      color currentcolor 
    .subhead
      color #fff 
      +a($t)
        margin-bottom 7px
      +b($t)
        font-size 13px
      +btw($m, $t)
        margin-bottom -4px
      +b($m)
        margin-bottom 6px
    .news-info
      opacity 0.5 
      +a($t)
        font-size 17px
        line-height 26px
        margin-bottom 54px
      +b($t)
        font-size 13px
        line-height 24px
    &-body
      +a($t)
        width 50%
        padding 53px 0 53px 58px
        box-sizing border-box
      +btw($m, $t)
        padding 422px 29px 43px
      +b($m)
        padding 326px 18px 33px 
    &-headline
      font-family $Ogg
      +a($t)
        margin-bottom 8px
      +a($sd)
        font-size 46px
        line-height 60px
      +btw($m, $sd)
        font-size 32px
        line-height 43px
      +b($m)
        font-size 25px
        line-height 36px
        margin-bottom 7px
    &-more
      +b($t)
        display none
      a
        display inline-block
        vertical-align top
        width 266px
        height 44px
        border 2px solid #fff
        text-align center
        font-weight 600 
        font-size 17px
        line-height 42px 
        transition-property color, background-color
        transition-duration $speed
        &:hover
          background #fff 
          color #000
        &:active
          color rgba(#000, 0.4)
  &__announcement
    background-repeat no-repeat
    +btw($t, $d)
      background-size 66.4567% auto
    +a($t)
      display flex
      align-items center
      padding 50px 0 
      min-height 500px
    +b($t)
      box-sizing border-box
    +btw($m, $t)
      background-position 50% 50px
      background-size auto 289px
      padding 350px 63px 39px
    +b($m)
      background-position 50% 40px
      background-size auto 160px
      padding 226px 33px 30px
    .subhead
      +a($m)
        margin 14px 0 11px
      +b($m)
        margin-bottom 21px
    &-headline
      font-family $Ogg
      +a($sd)
        font-size 40px
        line-height 52px
      +btw($m, $sd)
        font-size 30px
        line-height 41px
      +b($m)
        font-size 23px
        line-height 35px
    &.-text-first
      +a($t)
        background-position right center
      {$ns}
        &__announcement
          &-body
            +a($d)
              padding-left 106px
            +btw($t, $d)
              padding-left 53px
            +a($t)
              width 50%
              box-sizing border-box
    &.-image-first
      +a($t)
        background-position left center
      {$ns}
        &__announcement
          &-body
            +a($t)
              margin-left 50%
              padding 0 0 26px 5px 
  &__normal
    .subhead
      +a($m)
        margin-bottom 6px
      +b($m)
        font-size 13px
        margin-bottom 8px
    .news-info
      font-size 14px
      line-height 20px
      color #a4a4a4 
    &-inner
      display block
      box-shadow 3px 5px 14px rgba(#000, 0.06)
      transition box-shadow $speed
      &:hover
        &:not(:active)
          box-shadow 3px 5px 20px rgba(#000, 0.15)
        {$ns}__normal-headline-copy
          transform translateX(-100%)
          // opacity 0
        {$ns}__normal-headline,
        .news-info p,
        .news-info p + p:before,
        .subhead__title,
        .subhead__title:after,
        .subhead__value
          fluxText()
    &-preview
      img
        display block
        width 100% 
    &-body
      +a($m)
        padding 20px 28px 
      +b($m)
        padding 25px 26px 21px
    &-headline
      font-size 17px
      line-height 26px
      color #000
      position relative
      overflow hidden
      height 78px
      +a($m)
        margin-bottom 37px
      +b($m)
        margin-bottom 38px
      &-copy
        position absolute
        top -2px
        left 0
        width 100% 
        color transparent
        transition-property transform, opacity
        transition-duration $speed   
        span
          border-bottom 1px solid #000
  &__social
    +b($t)
      display none
    &-inner
      display block
      height 100% 
      margin 0 33px
      position relative
      &:hover
        {$ns}__social-link
          fluxText()
          &-copy
            transform translateX(-100%)
            // opacity 0
    &-media
      color #3c3c3c 
      height calc(100% - 69px) 
      position relative
      &:before
        content "" 
        display block
        padding-top 100% 
      img,
      p
        display block
        position absolute
        left 0
        width 100%
        top 50%
        transform translateY(-50%)
      p
        padding-top 36px
        +b($d)
          font-size 17px
          line-height 30px
          max-height 270px
          overflow hidden
    &-link
      font-size 17px
      line-height 20px 
      position absolute
      overflow hidden 
      bottom 25px
      left 0
      color #000
      &-copy
        position absolute
        top -2px
        left 0
        width 100% 
        color transparent
        transition-property transform, opacity
        transition-duration $speed   
        span
          border-bottom 1px solid #000
  &__preloader
    text-align center
    +a($m)
      height 300px
      line-height 300px
    +b($m)
      height 200px
      line-height 200px
    &-pluses
      i
        display inline-block
        vertical-align middle
        position relative
        margin 0 3px
        width 14px
        height 14px 
        animation spin linear infinite 1.5s
        &:before,
        &:after
          content "" 
          display block
          position absolute
          background-color #000
        &:before
          top 0
          left 5px
          width 4px
          height 100% 
        &:after
          top 5px
          left 0
          width 100% 
          height 4px
        &:nth-child(1)
          opacity 0.1
        &:nth-child(2)
          opacity 0.2 
          animation-delay 0.5s 
        &:nth-child(3)
          animation-delay 1s 
