.page-home
  .home-main-status
    margin-top 20px
    padding 20px
    background-color $white
    border-radius 10px

    .home-main-status-title
      display flex
      align-items center
      margin-bottom 20px
      color #122075
      font-weight 600

      > div
        width 50%
        font-size 16px

        > img
          width 24px
          height 24px
          margin-right 6px

    .home-main-status-wrapper
      display flex
      justify-content space-between
      .status-wrapper-item
        // flex 1
        background-color #fafafa
        border-radius 6px

        &:nth-of-type(2)
          margin 0 20px

        > div:not(:first-of-type)
          display flex
          justify-content space-between
          margin-left 16px
          margin-right 16px
          padding 12px 0 12px 0
          border-bottom 1px solid #f5f5f5

          &:last-child
            border-bottom 0

          > span
            font-size 14px
            color $grey10

            &:last-of-type
              color #122075
              text-align right

        > div:first-of-type
          text-align left
          padding-left 16px
          color $main-font
          font-size 16px
          padding-bottom 4px
          font-weight 600
          padding-top 12px

        > div:nth-of-type(4)
          border-bottom 0
        &.status-wrapper-first
          display flex
          width 50%
          align-items center

          .main-status-title
            width 50%
            font-size 48px
            padding-top 0
            padding-bottom 0
            color #122075

           > div:not(:first-of-type)
            margin-left 0px

          .main-status-content
            display flex
            flex 1
            flex-direction column
            border 0
            padding-bottom 5px

            >div
              padding 5px 0 14px
              justify-content space-between
              display flex

              >span
                text-align left

                &:first-child
                  color #333333
                  font-size 14px
                  width 145px
                  margin-right 13px

                &:last-child
                  flex 1
                  color #122075

              a
                color #00D0C3
                margin-left 12px
.mobile-only
  display none !important

@media screen and (max-width: 1200px)
  .mobile-only
    display block !important

  .pc-only
    display none !important

  .page-home
    .home-main-status
      margin-top 16px
      border-radius 4px
      padding 0

      .home-main-status-title
        font-size 12px
        padding 10.5px 12px 11px
        margin-bottom 0
        border-bottom 1px solid #f5f5f5

        >div
          font-size 13px
          width 100%
          > img
            width 12px
            height 12px
            margin-right 4px

      .home-main-status-wrapper
        flex-direction column
        padding 0 12px 0px

        .status-wrapper-item
          margin 12px 0 0
          padding-bottom 16px
          border-radius 4px
          width 100% !important

          &:nth-of-type(2)
            margin 12px 0 0

          > div:first-of-type
            text-align left
            padding-left 12px
            font-size 14px

          > div:not(:first-of-type)
            margin 0
            padding 16px 12px 0
            border-bottom 0

            > span
              font-size 13px

          &.status-wrapper-first
            width 100%
            flex-direction column
            justify-content start
            align-items start
            padding-bottom 0

            .main-status-title
              text-align left
              padding-left 12px
              padding-top 16px
              padding-bottom 0px
              font-size 24px

            .main-status-content
              padding-top 16px
              width 100%
              padding-bottom 0

              >div
                padding-top 0
                width 100%
                padding-right 0
                padding-bottom 16px

                span
                  font-size 13px

                  &:last-child
                    text-align right


