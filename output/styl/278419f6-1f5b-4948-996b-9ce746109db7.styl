// Custom styles.

$link-color = #2780e3;
$link-hover-color = #1094e8;
$sidebar-link-hover-color = #0593d3;

// Next.Muse中为Header和Footer添加背景色
#header, #footer {
  background-color: rgb(245, 245, 245);
}

//防止sidebar和footer同时开启动效时堆叠异常
#sidebar, header {
  z-index: 1 !important;
}

//防止挡住页末文章的阅读全文按钮
.main {
  padding-bottom: 30px;
}

// Mist主题下自定义样式
if hexo-config('scheme') == "Mist" {
  .site-meta {
    float: none;
  }

  .footer-inner {
    text-align: center;
  }

  /*.menu {
    text-align: right;
  }*/
}

// Muse主题下自定义样式
if hexo-config('scheme') == "Muse" {
  .site-meta {
    .brand {
      color: rgb(34, 34, 34);
      background: none;
    }

    .site-title {
      font-size: 24px;
      font-weight: bold;
    }
  }
}

//修改不蒜子数据颜色
.busuanzi-value {
  color: $link-hover-color;
}

//增加搜索弹窗的页边距
.local-search-popup #local-search-result {
  padding: 25px 40px
  height: calc(100% - 95px)
}

//屏蔽标题下的评论数量
.post-comments-count {
  display: none;
}

//屏蔽评论组件的多余信息
#comments .info, #comments .vsys {
  display: none;
}

// 标题的的自定义样式，添加下划线
.post-body h2, h3, h4, h5 {
    padding-bottom: 8px;
    border-bottom: 1px solid #e6e6e6;
}
.post-body h2{
    border-bottom: 2px solid #e6e6e6;
}

// 文章摘要图片的自定义样式
img.img-topic {
    width: 100%;
}

// 去掉图片边框
.posts-expand .post-body img {
    border: none;
    padding: 0px;
}

// btn的自定义样式
.btn{
  font-weight: 400;
  white-space: nowrap;
  line-height: 1.42857143;
  padding: 8px 20px;
  border: 2px solid #6f7c82;
  border-radius: 2px;
  border-color: #6f7c82;
  background: #6f7c82;
  transition: all .3s ease;
  &:hover{
    color: #6f7c82;
    background: transparent;
    border-color: #6f7c82;
    text-decoration: none;
  }
}

// 文章``代码块的自定义样式
code {
    margin: 0px 3px;
    font-size: 90%;
    border-radius: 3px;
    border: 1px solid #f0f2f3;
    background: #fafafa;
}

// 加宽菜单间距，放大菜单图标
#menu .menu-item {
  margin: 0px 14px;

  .fa {
    font-size: 16px;
  }
}

// 隐藏首页的题图
section.posts-expand .post-body .fancybox {
  display: none;
}

// 文章标题动态效果
.posts-expand .post-title-link::before {
    background-image: linear-gradient(90deg, #1098AD 20%, #07B39B 60%, #6DBA82 100%);
}

// 去除在页面文章之间的分割线
.posts-expand .post-eof {
    margin: 0px;
    background-color: rgba(255, 255, 255, 0);
}

// 去除页面底部页码上面的横线
.pagination{
    border: none;
    margin: 0px;
}

// 去除上下一页、页码上方的横线
.pagination .prev, .pagination .next, .pagination .page-number{
    border: none;
}

// [Read More]样式
.post-button {
  margin-top: 10px;
  margin-bottom: 40px;
}

// [Read More]按钮样式
.post-button .btn{
  font-size: 15px;
}

// 侧边栏放在左边
.sidebar-toggle {
  left: 30px;
}
.sidebar {
  left: 0px;
  box-shadow: none;
}

// 侧栏近期文章标题
.links-of-blogroll-title {
  margin: 6px 15px 0 10px;
  color: #5bc0de;
  font-weight: bold;
  border-bottom-color: #5bc0de;
  cursor: pointer;
}

// 时间轴样式
.posts-collapse {
    margin: 50px 0px;
}
@media (max-width: 1023px) {
    .posts-collapse {
        margin: 50px 20px;
    }
}

