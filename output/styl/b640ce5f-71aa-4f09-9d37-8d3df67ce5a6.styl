.tooltip
  position: absolute
  z-index: 2
  left: 50%
  width: 0
  display: none

  +above(980px)
    left: 50%
    transform translateX(-50%)

  &::before
    content: ''
    position: absolute
    left: 50%
    width: 0;
    height: 0;
    margin-left: -8px
    border-left: 8px solid transparent
    border-right: 8px solid transparent

  &__list
    padding-left: 24px
    list-style disc

    li
      margin-top: 3px

  &__popup
    background: rgba(34, 34, 34, .95)
    font-size: 14px;
    line-height: 21px;
    color: #FFFFFF;
    border-radius: 7px / 4px
    width: 382px
    max-width 80vw
    padding: 16px 20px
    display block
    position: relative

    &::before
      content: '';
      position: absolute;
      top: -12px;
      bottom: -12px;
      left: 0;
      right: 0;

    p
      + p
        margin-top: 10px

  &-top
    bottom: 100%
    padding-bottom: 12px

    &::before
      bottom: 4px
      border-top: 8px solid rgba(34, 34, 34, .95)

  &-bottom
    top: 100%
    padding-top: 12px

    &::before
      top: 4px
      border-bottom: 8px solid rgba(34, 34, 34, .95)

  //&__parent
  //  &:hover ^[0]
  //    display: block

  &__link
    color: #fff
    display inline-flex
    flex-flow row nowrap
    align-items: center;

    span
      position: relative

      &::before
        content: '';
        position: absolute;
        bottom: -3px
        right: 0
        left: 0
        border-bottom: 1px solid #fff
        opacity: .23
        transition opacity .3s

    &:hover
      span::before
        opacity: 1

    svg
      margin-left: 10px
      width: 20px
      height: 16px
      fill: #fff
