.Home
    text-align: center
    color: black
    
    button
        border: 1px solid transparent
        font-size: 1rem
        
    .featured
        font-weight: bold
        font-size: 3rem
        line-height: 3rem

    >div
        position: relative
        
        >div
            width: 100%
            >img
                width: 100%
            
        .overlay
            position: absolute
            width: 100%
            
        &:first-child
            color: white
            
            .overlay
                bottom: 0
                left: 0
                background-color: rgba( 0,0,0,.7)
                color: white
                height: 33%
                
                >div
                    width: 50%
                
                    &:first-child
                        display: flex
                        justify-content: center
                        >img
                            width: 60%
                            height: 100%
                    &:last-child
                        text-align: center
                        padding: 0 2rem

                        
        &:nth-child(2)            
            button
                color: white
                background-color: $ChristmasRed
                &:hover
                    background-color: lighten($ChristmasRed, 15%)
                
            .overlay
                top: 0
                height: 100%
                
                >div
                    width: 50%
                
                    &:first-child
                        padding-left: 5%
                    
                    &:last-child
                        padding-left: 8%
                        >img
                            width: 80%
                            height: 100%
                            
        &:last-child            
            button
                background-color: $Orange
                color: white
                &:hover
                    background-color: lighten($Orange, 15%)

            .overlay
                top: 0
                height: 100%
                justify-content: center
                padding-top: 6%
                
                >div
                    >div
                        &:nth-child(2)
                            font-size: 1.35rem
                            font-weight: bold
                        &:last-child
                            margin-top: .75rem

@media (max-width: 950px)
    .Home
        button
            font-size: .9rem

        .featured
            font-size: 2.5rem
            line-height: 2.5rem
            
        >div:last-child .overlay >div >div
            &:nth-child(2)
                font-size: 1rem
                
@media (max-width: 767px)
    .Home
        >div                
            &:first-child
                .overlay
                    height: auto
                    padding: 2rem 15%
                    display: block
                    
                    >div
                        width: 100%
                        
                        &:first-child
                            margin-bottom: 1rem

                            >img
                                width: 100%
                                
                        &:last-child
                            padding: 0
                            font-size: .9rem
                            
            &:nth-child(2)
                color: white
                
                .overlay
                    flex-direction: column
                    justify-content: center
                    
                    >div
                        width: 55%
                        
                        &:first-child
                            order: 2
                            padding: 0
                            
                            >div:last-child
                                margin-top: .5rem
                                
                        &:last-child
                            order: 1
                            margin-bottom: 1.25rem
                            padding: 0
                            >img
                                width: 100%
                                
            &:last-child
                .overlay
                    position: static
                    display: block
                    background-color: white
                    height: auto
                    padding: 2.5rem 0
                    text-align: center
                            
@media (max-width: 450px)
    .Home
        button
            font-size: .8rem
        .featured
            font-size: 2rem
            line-height: 2rem                           
                
@media (min-width: 1500px)
    .Home
        button
            font-size: 1.25rem
            
        .featured
            font-size: 4rem
            line-height: 4rem
            
        >div:first-child
            font-size: 1.25rem
            line-height: 1.9rem
            
        >div:last-child .overlay >div >div
            &:nth-child(2)
                font-size: 1.5rem
                        
            


