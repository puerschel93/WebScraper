[my-skin=confort-gold]

  gridColor = rgba(236,221,206,1)
  
  .my-grid
    background gridColor
  
  .my-grid caption
    background gridColor

  border-table()
    border-table-no-right()
    border-right  1px solid #a9aeb9
    
  border-table-no-right()
    border-bottom 1px solid #a9aeb9
    border-top    1px solid #a9aeb9
    border-left   1px solid #a9aeb9
    border-right  0px solid #a9aeb9
    margin 0px
    border-spacing 0px
    border-collapse collapse    
  
  .my-grid
    font-family helvetica
    border-table()
  
  .my-grid
    border-table-no-right()
 
  nowrap()
    white-space pre
    max-width 300px
    
  .my-grid td
    font-size 90%
    color #555866
    border-table()
    nowrap()
    padding 7px
  
  .my-grid td.my-detail-grid
    overflow-x visible
    border-right none 
    z-index -1000
    
  .my-grid tr:nth-child(2n) 
    background-color #ddd1c6
  
  .my-grid tr td x
    background-color #e5d8cc
    border-bottom   2px solid #666
    border-top      2px solid #3F517F
  
  .my-grid th
    border-table()
    color #555866
    
  .my-grid tbody th
    nowrap()
    background-color #ceb293
  
  .my-grid caption
    font-family Helvetica
    font-weight bold
    font-size 75%
    letter-spacing 1px
    border-table()
    background #535387
    background -webkit-linear-gradient(#454149, #525b6e)
    background -o-linear-gradient(#454149, #525b6e)
    background -moz-linear-gradient(#454149, #525b6e)
    background linear-gradient(#454149, #525b6e)
    padding 15px
    color #ecddce
  
  .my-grid tfoot
    background-color #757582
    color #35353d
    font-size 90%
    padding 5px
  
  .my-grid thead th
    font-family  Helvetica
    font-size 70%
    background-color #757582
    white-space nowrap
    color #f7c99b
    z-index 1
   
  .th-name
    padding 10px
    font-size 70%
    overflow hidden
      
  .my-grid thead th.th-detail
    font-size 60%
    white-space wrap
  
  .grid-th grid-th-actions
     background-color #262b38
    
  [io-status=pending]
    background-color #8eacca
    
  [io-status=updating]
    background-color #879cb1
    
  [io-status=error]
    background-color #ad3e3e
  
  [io-status=temporal-ok]
    background-color #559e8c
  
  [io-status=write-read-conflict]
    background-color #DAD
  
  [io-status=background-change]
    background-color #ADD
  
  .table-button
    margin 0px
    border 0px
    padding 0px
    background-color transparent
    z-index -1
       
  .table-button img
    height 22px
    padding 3px
    -webkit-transform scale(1.0)
    transform scale(1.0)
    -webkit-transition .3s ease-in-out
    transition .3s ease-in-out
  
  .table-button img:hover
    -webkit-transform scale(1.2)
    transform scale(1.2)
    cursor pointer
  
  .table-button img:active
    -webkit-transform scale(1.2)
    transform scale(1.2)
    cursor pointer
    
  .autoFilter
    background-color #757582
    width 30px
    
    
  [has-filter='1'] 
    [when-filter=no] 
      display none
    [when-filter=yes] 
      display inherit
  
  [has-filter='0']
    [when-filter=yes] 
      display none
    [when-filter=no] 
      display inherit
  
  .filter-span
    display inline-block
    color #505365
    background-color #f7c99b
    padding 2px
    border-top 1px solid #525a6c
    border-left 1px solid #525a6c
    border-bottom 1px solid #525a6c
    border-right 1px solid #525a6c
    min-height 20px
    min-width 20px
    outline none !important
  
  .filter-span:focus
    display inline-block
    background-color #FFF
    padding 2px
    border-top 1px solid #f9b877
    border-left 1px solid #f9b877
    border-bottom 1px solid #f9b877
    border-right 1px solid #f9b877
    min-height 20px
    min-width 20px
    outline none !important
    
  .filter-line
    th
      vertical-align middle
      
  .filter-line
    td
      padding 5px
      vertical-align bottom
  
  .grid-dummy-cell-ini
    height: 1px;
    width: 1px;
    transition: height 0.6s ease;
  
  .grid-dummy-cell-del
    transition: height 0.6s ease;
  
  @keyframes animateheight {
    from {transform: scaleY(0.1)}
    to {transform: scaleY(1)}
  }
  
  .empty-rigth-column{
    background-color inherit !important
    border inherit !important
    padding 0 !important
  }
  
  .my-grid td.autoFilter{
    nowrap()
    white-space nowrap
    background-size 24px
    background-position center left 
    padding-left 24px
  }
  
  td.autoFilter button{
    display inline-block
  }
  
  .number_miles + .number_miles{
    margin-left 2px
  }
  
  .number_decimals
    font-size 90%
  
  .date_year
    font-size 90%
  
  .img-lupa
    height 25px
    -webkit-transform scale(1.0)
    transform scale(1.0)
    -webkit-transition .2s ease-in-out
    transition .2s ease-in-out
    
  .img-lupa:hover
    height 35px
    cursor pointer
    -webkit-transform scale(1.1)
    transform scale(1.1)
    -webkit-transition .2s ease-in-out
    transition .3s ease-in-out
    
    
  .foot-info
    color #FFF
    font-weight 600
    padding 7px
    background #8de9f5
    background -webkit-linear-gradient(#9c9cb0, #ceced0)
    background -o-linear-gradient(#9c9cb0, #ceced0)
    background -moz-linear-gradient(#9c9cb0, #ceced0)
    background linear-gradient(#9c9cb0, #ceced0)
    border-right  1px solid #535767
    border-bottom 1px solid #535767
    border-left  1px solid #535767
    border-top 1px solid #535767
  
  .foot-info:hover
    color #FFF
    background #d8a369
    background -webkit-linear-gradient(#d8a369, #ceb293)
    background -o-linear-gradient(#d8a369, #ceb293)
    background -moz-linear-gradient(#d8a369, #ceb293)
    background linear-gradient(#d8a369, #ceb293)
    border-right  1px solid #535767
    border-bottom 1px solid #535767
    border-left  1px solid #535767
    border-top 1px solid #535767
    cursor pointer
    
  .foot-info:active
    color #FFF
    background-color #082158
    border-right  2px solid #2f5097
    border-bottom 2px solid #2f5097
    border-left  2px solid #122348
    border-top 2px solid #122348
    
  #button-filter
    color #FFF
    font-weight 600
    padding 7px
    background #8de9f5
    background -webkit-linear-gradient(#9c9cb0, #ceced0)
    background -o-linear-gradient(#9c9cb0, #ceced0)
    background -moz-linear-gradient(#9c9cb0, #ceced0)
