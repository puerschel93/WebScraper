  #main-top-bar
    background-color #171d3b
    background -webkit-linear-gradient(#171d3b, #757582)
    background -o-linear-gradient(#171d3b, #757582)
    background -moz-linear-gradient(#171d3b, #757582)
    background linear-gradient(#171d3b, #757582)
    vertical-align center
    margin 0px
    padding 5px
  
  #main-top-bar1
    background-color #838593
    
  .menu-item
    font-family Helvetica
    color #f8d8b9
    font-size 75%
    font-weight 700
