.ps-wrapper
    width 70vw
    height 100vh
    background #222222
    position fixed
    top 0
    z-index 9999
    box-shadow 10px 0px 50px rgba(0,0,0,.4)
    .content-wrapper
        padding 1em
    &.collapsed
        left -70vw !important
        transition: .3s linear
    &.expanded
        left 0 !important
        transition: .3s linear
    .toggle-menu
        position absolute
        bottom 5vh
        font-size 70px
        line-height: 70px
        background white
        border 1px solid #222222
        color: #222222
        border-radius 50%
        box-shadow 0px 0px 35px rgba(0,0,0,.4)
        &.expanded
            transform: rotate(540deg)
            transition: .3s linear
            right -15px
        &.collapsed
            right -65px
            transform: rotate(0deg)
            transition: .3s linear