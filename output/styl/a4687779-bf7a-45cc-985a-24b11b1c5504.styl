
h1,h2,h3,h4,h5,h6 {
    padding-top: 80px
    margin-top: -50px
    border: none;
}

.tal-container-title {

}
.tal-container-title {
    display: flex;
    justify-content: center;
    width: 100%;
    margin: 10px 0;
    position relative;
    &.block-round p {
        border-radius: 100px;
    }
    &.block-skew p {
        transform: skew(-30deg);
    }
    &>p {
        display: inline-block;
        padding: 5px 40px;
        font-size: 20px;
        color: $textLightColor;
        background-color: $accentColor;
        position relative;
        z-index: 10;
    }
    &::after {
        content: '';
        display: block;
        width: 100%;
        height: 0px;
        border-top: 2px dashed $borderColor;
        position absolute;
        top: 50%
    }
}

.tal-container-desc {
    text-align: center;
    &>p:nth-child(1) {
        font-size: 16px;
        letter-spacing: 3px;
        color: $textColor;
        margin: 0;
    }
    &>p:nth-child(2) {
        font-size: 14px;
        letter-spacing: 3px;
        color: #C5C8D6;
        margin: 0;
        margin-top: -5px;
    }
}

.tal-line-clamp-1 {
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.tal-line-clamp-2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    /* 指定显示多少行 */
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.tal-line-clamp-3 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    /* 指定显示多少行 */
    -webkit-line-clamp: 3;
    overflow: hidden;
}
