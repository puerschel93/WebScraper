.shop-page
    gradient()
    
    +above-h(hz)
        min-height 100vh

.main-container-shop
    position: relative
    display block
    width 100%
    min-height 100vh
    overflow hidden
    
    +above-h(hz)
        min-height auto
        overflow auto
    
    +below(tb)
        min-height auto
    
.shop-item
    padding 80px 20px 0 20px
    
    +below(tb)
        padding 50px 35px 0 35px
    
    +below(mb) 
        padding 50px 10px 0 10px

.shop-item-wrap
    display flex !important
    flex-direction row
    justify-content space-between
    position relative
    
    +below(tb)
        padding 10px
    
    +below(mb)
        flex-direction column
        padding 0
    
    &__description
        display flex
        flex-direction column
        width 350px
        
        +below(mb)
            width 100%
            padding 5px
        
        .shop-header
            display block
            
            +below(tb)
                margin-top 15px
            
            +below(mb)
                width 200px
                margin-top 10px
            
            h1
                title-40()
                color #fff
                text-transform uppercase
                position relative
                
                +below(tb)
                    title-30()
                    color #fff
                
                strong
                    font-weight 300
                
                &:after
                    content ""
                    display block
                    position: absolute;
                    top: 70px;
                    width: 100px;
                    height: 4px;
                    background-color: #fff;
                    
                    +below(mb)
                        height 2px
                
        .shop-text
            display block
            margin-top 15px
            
            +below(mb)
                width 185px

            p
                regular-14()
                color #fff
                
                +below(tb)
                    regular-18()
                    
                +below(mb)
                    regular-14()
                
    &__price
        display flex
        flex-direction column
        justify-content space-between
        height 250px
        align-items center
        
        +below(tb)
            margin 0 50px
            
        +below(mb)
            height 160px
            justify-content center
        
        .price-amount
            display block
            position relative
            
            &:after
                content ""
                display block
                position absolute
                left 0
                bottom 20px
                width 100%
                height 1px
                background-color #fff
                
                +below(mb)
                    width 100%
                    bottom 0
            
            p
                display block
                min-width 200px
                regular-30()
                color #fff
                min-width 140px
                
                &:after
                    content " $"
                    color #a4a4a4ff
                    font-weight 600    
                    font-family Verdana,sans-serif !important
                
                +below(mb)
                    min-width auto
                    margin 5px 0
                    regular-24()
                
        .item-quantity
            text-align center
            display flex
            margin auto
            font-family Verdana,sans-serif
            
            +below(mb)
                margin 20px auto

            input
                border none
                text-align center
                color #fff
                background-color transparent
                cursor text
                height: 30px
                width: 40px
                outline 0
                -webkit-appearance: none
                regular-16()
                line-height 40px
                font-family Verdana,sans-serif
        
            button[class*=btn] 
                width: 30px
                height: 30px
                background-color: transparent
                border: none
                cursor: pointer
                outline 0
                -webkit-appearance button
                title-20()
                font-family Verdana,sans-serif
                color #999
                text-align center
                font-weight 500
                line-height 30px
                
        .add-to-cart
            display flex
            width 190px
            height 50px
            cursor pointer
            align-items center
            text-align center
            justify-content center
            regular-16()
            color #808080
            text-transform uppercase
            background-color #333
            border none
            box-sizing border-box
            
            &:active
            &:focus
                outline none
                
            &:hover
                background-color #171717
                color #fff
                -webkit-transition: 0.6s ease
                -moz-transition: 0.6s ease
                -o-transition: 0.6s ease
                transition: 0.6s ease
                
                +below(tb)
                    background-color #333
                    color #808080

                
    &__img 
        display flex
        width 160px
        margin-top 35px
        margin-right 70px
        
        +below(tb)
            margin-right 0
        
        +below(mb)
            position absolute
            right 5px
            width auto

        
        img
            width 155px
            height 404px
            
            +below(mb)
                width 90px
                height 250px
        
.slider-btn-wrap
    display flex !important
    width 100%
    justify-content flex-end
    position relative
    flex-direction row
    align-items center
    margin-top 22px
    
    +below(tb)
        justify-content center
    
.ted-fon-slider
    position absolute
    left 0
    top -140px
    
    +below(tb)
        left 30px
        top 82px
    
.ted-fon-slider-pl
    position absolute
    left 0
    top -140px
    display none
    
    +below(tb)
        left 30px
        top 82px
    
.slider-nav
    display flex !important
    width 350px
    flex-direction row
    justify-content space-between
    
    .img-ted-mini
        display block
        width 40px
        filter url("data:image/svg+xml;utf8,&lt;svg xmlns=\'http://www.w3.org/2000/svg\'&gt;&lt;filter id=\'grayscale\'&gt;&lt;feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/&gt;&lt;/filter&gt;&lt;/svg&gt;#grayscale")
        filter gray
        -webkit-filter grayscale(100%)
        -webkit-filter grayscale(100%)
        -moz-filter grayscale(100%)
        -ms-filter grayscale(100%)
        -o-filter grayscale(100%)
        filter url(grayscale.svg) /* Firefox 4+ */
        filter grayscale(100%)
        transition filter .3s
        outline 0 !important
        cursor pointer
        
        +below(mb)
            display none !important
        
        &.slick-current
            filter grayscale(0%)
            outline 0 !important
        
        &:hover
            filter grayscale(0%)
            outline 0 !important
        
        img
            width 40px
        
    .slick-list
        padding 0 90px !important
        outline 0 !important

.btn-left
.btn-right
    display flex !important
    height 50px
    width 30px
    background #333
    align-items center
    justify-content center
    cursor pointer
    outline none !important
    
    &:hover
        background-color #171717
        color #fff
        -webkit-transition: 0.6s ease
        -moz-transition: 0.6s ease
        -o-transition: 0.6s ease
        transition: 0.6s ease
        outline 0 !important
        
        +below(tb)
            background #33
3
    span
        content: '';
        position: absolute;
        width: 10px;
        height: 10px;
        border: solid #cecece;
        border-width: 0 2px 2px 0;
        outline: 0 !important;
        transform: rotate(135deg)
    
    &:active
    &:focus
        outline 0 !important

.btn-left
    margin-right 20px

.btn-right
    margin-left 20px

    span
        transform: rotate(315deg)
        margin-right: -4px
        
.buttons-links
    display flex
    width 100%
    justify-content flex-end
    margin-top 10px
    
.cart-next-btn
    next-btn()

.cart-prev-btn
    previous-btn()
    margin-right 58px
    
