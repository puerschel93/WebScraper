/* Order Boxes */
.two-col-wrap
  width 50%
  float left
  &:first-child > div
    margin-right 10px

.order-box
  @extends .container
  min-height 287px
  .currency-input
    width 100%
    margin-bottom 10px

.amount
  font-weight bold

.header-balance
  float right

.header-aside
  float right
  line-height 20px
  a
    font-weight bold

.market-title
  @extends .con-header
  color $text-color
  padding 10px
  margin 0 0 10px 0
  font-size 16px
  line-height 16px
  font-weight 500

.market-type
  clearfix()
  border-bottom 1px solid #ecedef
  label
    padding 10px
    width 50%
    display block
    float left
    &:first-child
      border-right 1px solid #ecedef
  input[type="radio"]
    margin-right 5px
  i
    font-style normal
    cursor pointer
    &:hover
      color $blue

.limit-order
  padding 10px
  label
    margin-bottom 5px
    display block
.confirm-order
  button
    width 100%
    padding 0
    height 30px
    line-height 30px

#buy-box
  .confirm-order
    button
      btn($teal)

#sell-box
  .confirm-order
    button
      btn($red)

.order-overview
  width 100%
  margin-bottom 10px
  font-size 13px
  th
    padding 7px 5px
    font-weight normal
  td
    padding 7px 5px
  .subtotal
  .to-receive
    background #f9f9f9
  .to-receive
    padding 8px 5px
    font-size 14px
    th
      font-weight bold

.overlay-amount
  position absolute
  line-height 28px
  top 0
  right 10px
  height 20px
  color #808080
  z-index 2

/* Order Book */
.order-book-wrap
  width 50%
  float left
  &:first-child
    .order-book
      margin-right 10px

.order-book
  @extends .container
  max-height 500px
  .order-book-order
    cursor pointer

.trade-history
  max-height 500px
  
.order-book-total
  float right
  color #999
  line-height 16px
  margin 0
  font-style italic

.table-wrap
  overflow-y auto
  overflow-x hidden
  max-height 440px

.trade-data
  width 100%
  border-collapse separate
  th
  td
    padding 6px 10px
  
  th
    vertical-align top
    width 100px
    white-space nowrap
    padding 0 10px
    border-bottom 1px solid #e0e0e0
    color #777c86
    font-weight 800
    height 29px
    line-height 29px
    text-align left
    font-size .8em
    text-transform uppercase
    box-shadow 0 1px 0 rgba(#000,.03)
    background-color #fff
    background linear-gradient(#fff, rgba(248,248,248,.9) 100%)
  .wall
    font-weight bold
  tr:nth-child(even)
    background-color #f9f9f9
  tr.highlight
    td
      color $lightgray  
  .buy
    .trade-type
    .trade-amount
      color $teal
  .sell
    .trade-type
    .trade-amount
      color $red

  .trade-type
    text-transform uppercase

  .action
    background #fff
    color inherit
    position relative
    border-radius 3px
    padding 2px 5px
    text-transform uppercase
    border 1px solid $border-color
    font-size 12px
    margin 0
    transition all .1s linear
    &:hover
      color $blue
      text-decoration none
      border-color $blue
    &:active
      top 1px
    &.cancel
      &:hover
        color $red
        border-color $red
      &:active
        top 1px

@media screen and (max-width: 800px)
  .two-col-wrap
    width 100%
  .two-col-wrap:first-child > div
    margin 0 0 10px 0
