/* Market Tickers */
.market-ticker
  @extends .container
  &.edit-on
    color #999
    .market-ticker-header
      background #fff
      .edit-ticker
        color inherit
    .rate
      display none
    .hide-coin
    .show-coin
    .move-coin
    .add-coin
      display block

  .edit-ticker
    float right
    font-size 15px
    color #999
    &:hover
      color $blue
      text-decoration none   

  a
    display block
    clearfix()
    height 29px
    padding 6px
    margin 3px

.market-ticker-coins
  ul
    reset-list()

.add-coin
  display none
  padding 10px
  background #f9f9f9
  border-top 1px dotted #ecedef
  select
    width 100%

.coin-stats
  ul
    reset-list()
    padding 10px
  li
    margin-bottom 5px
    &:last-child
      margin 0
  label
  div
    display inline-block
  label
    width 100px

.rate
  &.on-hold
    color $text-color
  &.none
    color $text-color
    &:after
      display inline-block
      content ""
      vertical-align middle
      width 6px
      height 2px
      background $text-color
      margin-left 3px
  &.up
    color $teal
    transition color .3s ease-out
    &:after
      display inline-block
      content ""
      vertical-align middle
      width 0
      height 0
      margin-left 3px
      border-style solid
      border-width 0 4px 5px 4px
      border-color transparent transparent $teal transparent
  &.down
    color $red
    transition color .3s ease-out
    &:after
      display inline-block
      content ""
      vertical-align middle
      width 0
      height 0
      margin-left 3px
      border-style solid
      border-width: 5px 4px 0 4px
      border-color: $red transparent transparent transparent

.market-ticker-coin
  clearfix()
  border-bottom 1px solid #ecedef
  border-top 1px solid #ecedef
  cursor pointer
  margin-bottom -1px
  margin-top -1px
  &.active
    a
      color #fff
      border-radius 2px
      border 0
      background $blue
      font-weight bold
      .rate
      &:hover
        color #fff !important
  
    .rate.up:after
      border-color transparent transparent #fff transparent
    .rate.down:after
      border-color #fff transparent transparent transparent
            
  &:hover
    color $blue

  .hide-coin
  .move-coin
    display none
  .hide-coin
    color #da4444
    margin-right 5px
    i
      vertical-align -1px
    &:hover
      text-decoration none
  .hide-coin
  .label
    float left
  .move-coin
    cursor ns-resize
    float right
    margin-left 5px
    i
      vertical-align middle
  .rate
    float right

