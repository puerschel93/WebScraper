@import "mixins.styl"

$height = 40px

header
  width 100%
  height $height
  background-color rgba(0, 0, 0, 0.8)
  .center
    width 1226px
    height 100%
    .left
      float left
      width 70%
      height 100%
      li
        float left
        font-size 12px
        height 14px
        line-height 14px
        margin-top 13px
        border-right 1px solid #b0b0b0
        padding 0 8px
        &:last-child
          border-right: 0
        a
          color: #b0b0b0
    .right
      float right
      width 20%
      height 40px
      ul
        li
          float left
          font-size 12px
          height 14px
          line-height 14px
          margin-top 13px
          border-right 1px solid #b0b0b0
          padding 0 8px
          &:last-child
            border-right: 0;
          a
            color #b0b0b0
      .shopcar
        float right
        width 120px
        height 41px
        background-color #ff6700
        color #fff
        text-align center
        line-height 41px
        font-size 12px
        margin-right 20px

content
  display flex
  justify-content center
  flex-wrap wrap
  width 100%
  & > * {
    width 1226px
  }
  nav
    height 100px
    & > * {
      float: left
    }
    & > a {
      display block
      height 100%
    }
    .logo
      width 50px
      background url("../img/logo_top.png") no-repeat
      background-position center
      background-size 100%
    .gif
      width 180px
      background url("../img/yyymix.gif") no-repeat;
      background-position center
      background-size: 100%;
    & > ul {
      display flex
      height 100%
      & > li {
        display flex
        align-items center
        margin 0 10px
        font-size 16px
      }
    }
    .search
      display flex
      align-items center
      height 100%
      float right
      .text
        box-sizing border-box
        width 250px
        height 50px
        border 1px solid #ccc
      .button
        border 1px solid #ccc
        width 50px
        height 50px
  .banner
    height 460px
    .f1
      float left
    .b_left
      width 234px
      height 100%
      float left
      background-color #0c0c13
      box-sizing border-box
      position: relative;

      & > ul {
        margin-top 30px
        & > li {
          display flex
          align-items center
          height 40px
          padding 0 30px
          font-size 14px
          &:hover {
            background-color: #ff6700;
            .side{
              display flex
            }
          }
          a {
            color: #fff;
            margin-left: 10px;
          }
          .side {
            position absolute
            display none
            flex-direction column
            flex-wrap: wrap;
            justify-content: flex-start;
            align-content: flex-start;
            right: 0;
            top: 0;
            transform: translateX(99.9%);
            z-index: 2;
            width: 800px;
            height: 461px;
            background-color: #fff;
            & > li {
              display: flex;
              justify-content: space-between;
              align-items: center;
              box-sizing: border-box;
              width: 265px;
              height: 71px;
              padding: 20px 0 0 10px;
              margin-bottom: 3px;
              a {
                display: flex;
                align-items: center;
              }
              .buy_left{
                color: #000;
                img {
                  width: 40px;
                  height: 40px;
                  margin-right: 10px;
                }
              }
              .buy_right{
                justify-content: center;
                color: #ff6700;
                width: 60px;
                height: 24px;
                font-size: 12px;
                border: 1px solid #ff6700;
              }
            }

          }
        }
      }

    .swiper-container {
      width: 992px;
      height: 100%;
      .swiper-wrapper {
        .swiper-slide {
          img {
            width: 100%;
            height: 100%;
          }
        }
      }
    }
  .sub_banner
    display flex
    justify-content space-between
    height: 170px;
    margin-top: 15px;
    .selector
      width 234px
      height 100%
      .sidebar
        float left
        width 78px
        height 85px
        img
          opacity 0.8
          &:hover {
            opacity 1
          }
    .bigImg
      width 316px
      height 100%
      a
        display flex
        width: 100%;
        height: 100%;
        img
          width: 100%;
          height: 100%;
          opacity: 0.8;
          &:hover {
            opacity: 1;
          }
  .recommend
    height 398px
    margin-top 20px
    h2
      height 58px
      line-height 58px
    ul {
      display flex
      justify-content space-between
      li {
        width 234px
        height 340px
        border-top 1px solid orange
        background-color #fafafa
        &:nth-child(2) {
          border-color: green;
        }
        &:nth-child(3) {
          border-color: blue;
        }
        &:nth-child(4) {
          border-color: red;
        }
        &:nth-child(5) {
          border-color: purple;
        }
        a {
          font-size: 14px;
          text-align: center;
        }
        img {
          width: 160px;
          height: 160px;
          opacity: 0.8;
          margin: 37px;
        }
        &:hover {
          img {
            opacity 1
          }
        }
        .discount {
          font-size: 12px;
          color: #b0b0b0;
          margin: 15px 0;
        }
        .price {
          color: #ff6709;
        }

      }
    }
  .parts
    height 672px
    margin-top 20px
    background-color #f5f5f5
    h2 {
      height 58px
      line-height 58px
    }
    ul {
      display flex
      justify-content space-between
      height 614px
      align-content space-between
      flex-wrap wrap
      li {
        width: 234px;
        height: 300px;
        background-color: #fff;

        &:hover {
          box-shadow: 0px 0px 30px #ccc;
          .comment {
            transform: translateY(0);
          }
        }
        a {
          display: flex;
          flex-direction: column;
          align-items: center;
          font-size: 14px;
          text-align: center;
          width: 100%;
          height: 100%;
          position: relative;
          overflow: hidden;
          .info {
            width: 65px;
            height: 20px;
            text-align: center;
            line-height: 20px;
            color: #fff;
            font-size: 10px;
          }
          .price {
            color #ff6700
          }
          .counter {
            height 15px
            line-height 15px
            color #aaa
            font-size 12px
          }
          img {
            width: 160px;
            height: 160px;
            margin: 10px 0 20px;
          }
          .bigImg {
            width 100%
            height 100%
          }
          .comment {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            transform: translateY(101%);
            transition: transform 0.4s;
            box-sizing: border-box;
            height: 70px;
            padding: 10px 0 0 30px;
            background-color: #ff6700;
            color: #fff;
            text-align: left;
            p {
              font-size: 12px;
              margin-top: 5px;
            }
          }

          .new {
            background-color greenyellow
          }
          .discount {
            background-color red
          }
          & > p {
            height 25px
            line-height 25px
            font-size 14px
          }
        }

      }
      .more {
        display flex
        flex-direction column
        justify-content space-between
        background-color transparent
        &:hover {
          box-shadow 0px 0px 0px
        }
        a {
          display: block;
          width: 100%;
          height: 142px;
          &:hover {
            box-shadow: 0px 0px 30px #ccc;
          }
          img {
            width: 100%;
            height: 100%;
            margin: 0;
          }
        }
      }
    }

footer {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  height: 120px;
  margin-top: 20px;
  padding: 30px 0;
  font-size: 12px;
  p {
    height: 30px;
  }
}


