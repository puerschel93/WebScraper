.box {
    width: 100%;

    .industry {
        width: 1920px;
        height: 320px;

        img {
            width: 100%;
            height: 100%;
        }
    }

    .industry-box {
        width: 100%;
        height: 1850px;
        background: #F6F6F6;

        .industry-model {
            width: 74%;
            height: 300px;
            display: flex;
            margin: auto;

            .industry-left {
                width: 73%;
                height: 300px;
                margin-top: 40px;

                .right-font {
                    width: 100%;
                    height: 80px;
                    background: #fff;
                    line-height: 80px;
                    font-family: bold;
                    margin-bottom: 20px;

                    span {
                        margin-left: 20px;
                        font-size: 20px;
                    }
                }

                .ight-box {
                    width: 100%;
                    height: 300px;
                    border-bottom: 20x solid #eee;
                }

                .font-1 {
                    width: 100%;
                    height: auto;

                    .font-1-hx {
                        background: #fff;
                        padding: 30px 20px;
                        border-bottom: 3px solid #C0C0C0;

                        p {
                            color: #73C153;
                        }

                        .font-1-left {
                            position: relative;
                            display: flex;

                            .font-img {
                                width: 30%;
                                height: 200px;
                                background: red;

                                img {
                                    width: 100%;
                                    height: 100%;
                                }
                            }

                            .font-i-font {
                                width: 70%;
                                height: auto;
                                padding-left: 20px;

                                .xx {
                                    font-size: 20px;
                                    font-family: bold;
                                }

                                .cc {
                                    height: 72px;
                                    font-size: 12px !important;
                                    margin: 10px 0px;
                                    overflow: hidden;
                                    text-overflow: ellipsis;
                                    display: -webkit-box; /* 将对象作为弹性伸缩盒子模型显示 */
                                    -webkit-line-clamp: 3; /* 控制最多显示几行 */
                                    -webkit-box-orient: vertical; /* 设置或检索伸缩盒对象的子元素的排列方式 */
                                }

                                .vv {
                                    width: 140px;
                                    height: 38px;
                                    background: red;
                                    line-height: 38px;
                                    text-align: center;
                                    background: #73C153;
                                    border-radius: 6px;
                                    position: absolute;
                                    color: #fff;
                                    bottom: 0;
                                }
                            }
                        }
                    }
                }
            }

            .industry-right {
                width: 28%;
                height: 300px;
                margin: 40px 0px 0px 27px;
                background: #ff9900;

                .right-1 {
                    width: 100%;
                    height: 500px;
                    background: #fff;
                    margin-bottom: 20px;
                }

                .right-2 {
                    width: 100%;
                    height: 400px;
                    background: #fff;
                    margin-bottom: 20px;
                }

                .right-3 {
                    width: 100%;
                    height: 740px;
                    background: #fff;
                }
            }
        }
    }

    .pahing {
        width: 100%;
        background: #fff;

        .el-pagination {
            width: 100%;
            height: auto;
            padding: 30px 0px;
        }
    }
}
