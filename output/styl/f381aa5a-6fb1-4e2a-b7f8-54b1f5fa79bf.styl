html
	height 100%
	font-size $rootFontSize, false
	user-select auto

body
	font-family sans-serif
	min-height 100%
	position relative
	-webkit-text-size-adjust 100%
	-webkit-font-size-adjust 100%
	display flex
	flex-direction column
	@media $max_sm
		width 1024px

img
	display block
	max-width 100%

h1, h2, h3, h4, h5, .b-title-1, .b-title-2, .b-title-3, .b-title-4, .b-title-5
	display block
	line-height 1.2
	font-weight 600
	margin-bottom 10px

h1, .b-title-1
	font-size 25px
h2, .b-title-2
	font-size 22px
h3, .b-title-3
	font-size 20px
h4, .b-title-4
	font-size 18px
h5, .b-title-5
	font-size 17px

p
	margin-bottom 20px
	&:last-child
		margin-bottom 0

ul, ol
	margin-bottom 20px
	list-style-position inside
	li
		margin-bottom 10px

table
	width 100%
	border 1px solid #d3d3d3
	border-collapse separate
	overflow hidden
	margin 27px 0
	th, td
		padding 14px 20px
		border-bottom 1px solid #d3d3d3
		border-right 1px solid #d3d3d3
		line-height 20px
		font-size 14px
		vertical-align top
		&:last-child
			border-right 0
	th
		font-weight 500
		font-size 16px
		background-color #ebebeb
		text-align left
		&.small
			width 580px
	tr
		&:last-child
			td, td
				border-bottom 0

i
	font-style italic

b, strong
	font-weight 600

button
	border 0

a
	cursor pointer

._no-border, ._no-border *
	border 0

._img-left,
._img-right
	margin-bottom 14px

._img-left
	float left
	margin-right 14px

._img-right
	float right
	margin-left 14px

.text-center
	text-align center
	
.text-right
	text-align right
	
.text-left
	text-align left
	
.text-uppercase
	text-transform uppercase
	
.error
	border-color red

.dnone
	display none


.text
	> p
		&:last-child
			margin-bottom 0

.fancybox-skin
	box-shadow none !important
	border-radius 0

.fancybox-wrap
	opacity 0
.compensate-for-scrollbar
	padding-right 17px

.owl-carousel .owl-item
	-webkit-transform translateZ(0)

.swiper-container
	.swiper-prev, .swiper-next
		vAlign()
	.swiper-prev
		left 0
	.swiper-next
		right 0
		
// BASE BUTTONS STYLES

.b-btn
	display inline-flex
	align-items center
	justify-content center
	text-decoration none
	border-radius 4px
	&_md
		height 42px
		padding 0 16px
		font-size 15px
	&_lg
		height 52px
		padding 0 20px
		font-size 16px
	&_base
		border 1px solid black
		color black
		background-color transparent
	&_red
		background-color red
		color #fff

// END BASE BUTTONS STYLES
		
// RADIO AND CHECKBOXES STYLES
		
.b-checkbox, .b-radiobox
	&__input
		position absolute
		width 1px
		height 1px
		overflow hidden
		clip rect(0 0 0 0)
		&:checked
			+
				.b-checkbox, .b-radiobox
					&__label
						&:after
							opacity 1
						&:before
							background-color #4286f4
							border-color #4286f4
	&__label
		display block
		position relative
		padding-left 22px
		cursor pointer
		&:before, &:after
			position absolute
			
.b-checkbox
	&__label
		&:before
			content ''
			width 15px
			height 15px
			border #adb5bd solid 1px
			border-radius 2px
			transition .25s background-color, .25s color
		&:after
			content '\2714'
			height 15px
			width 15px
			line-height 15px
			text-align center
			opacity 0
			color #fff
			transition .25s opacity
		&:before, &:after
			left 0
			top 0
			
.b-radiobox
	&__label
		&:before
			content ''
			width 15px
			height 15px
			border #adb5bd solid 1px
			border-radius 50%
			transition .25s background-color, .25s color
		&:after
			content ''
			height 5px
			width 5px
			border-radius 50%
			text-align center
			opacity 0
			background-color #fff
			transition .25s opacity
		&:before
			left 0
			top 1px
		&:after
			top 6px
			left 5px
			
// RADIO AND CHECKBOXES STYLES
			
.b-popup
	width 600px
	padding 60px
	background-color #fff
	position relative
	&__close
		display inline-flex
		justify-content center
		align-items center
		color #fff
		position absolute
		width 45px
		height 45px
		border-radius 50%
		background-color #fc2828
		border-radius 50%
		top 0
		right 0
		transform translate(50%, -50%)
		@media $working_hover
			transition .25s background-color
			&:hover
				background-color #0f1e35
				


.d-none-xsm
	@media $min_xsm
		display none !important
.d-none-sm
	@media $min_sm
		display none !important
.d-none-md
	@media $min_md
		display none !important	
.d-none-lg
	@media $min_lg
		display none !important	
.d-none-xlg
	@media $min_xlg
		display none !important
		
.d-none-max-xs
	@media $max_xs
		display none !important
.d-none-max-sm
	@media $max_sm
		display none !important
.d-none-max-md
	@media $max_md
		display none !important
.d-none-max-lg
	@media $max_lg
		display none !important

.im-popup
	opacity 0
	
// base components style

// BASE STYLE BREADCRUMBS

.b-breadcrumbs
	&__link
		display inline-flex
		margin-right 20px
		text-decoration none
		position relative
		color #0b0b0e
		line-height 1.2
		transition .25s opacity
		&:after
			content ''
			position absolute
			pointer-events none
			width 10px
			height 1px
			background-color #0b0b0e
			right -15px
			top 50%
			margin-top -1px
		&:last-child
			margin-right 0
			&:after
				content none
		&:hover:not(span)
			opacity .6
			
// END BASE STYLE BREADCRUMBS

// BASE STYLE PAGINATION

.b-pagination
	display flex
	justify-content center
	&__link
		width 40px
		height 40px
		display inline-flex
		align-items center
		justify-content center
		text-decoration none
		border 1px solid #0f1e35
		color #343434
		font-size 16px
		margin-left -1px
		transition .25s opacity
		&_active
			background-color #c9c9c9
			cursor default
		&:first-child
			border-radius 6px 0 0 6px
		&:last-child
			border-radius 0 6px 6px 0
		&:hover:not(.b-pagination__link_active)
			background-color #c9c9c9
		&_dotted
			pointer-events none

// END BASE STYLE PAGINTAION

// BASE STYLE NAV
	
.b-nav
	display flex
	height 40px
	&__wrap
		display flex
		align-items center
		padding 0 20px
		&_hover-dropdown
			position relative
			@media $working_hover
				&:hover
					.b-nav
						&__inner
							opacity 1
							visibility visible
	&__item
		text-decoration none
		color #000
		@media $working_hover
			transition .25s opacity
			&:hover:not(.b-nav__item_act):not(span)
				opacity .6
		&_act
			font-weight 700
	&__inner
		z-index 1
		opacity 0
		visibility hidden
		position absolute
		top 100%
		left 0
		padding 12px 0
		box-shadow 0px 10px 5px 0px rgba(0,0,0,0.25)
		transition .25s opacity, .25s visibility
		transition-delay .25s
		background-color #fff
		border-radius 0 0 6px 6px
	&__inner-wrap
		display block
	&__inner-item
		padding 10px
		text-decoration none
		color #000
		display block
		@media $working_hover
			transition .25s opacity
			&:hover
				opacity .6
		
	
 // END BASE STYLE NAV

.loading
	color transparent!important
	min-height .8rem
	pointer-events none
	position relative

.loading::after
	animation loading .5s infinite linear
	border .1rem solid #fff
	border-radius 50%
	border-right-color transparent
	border-top-color transparent
	content ""
	display block
	height .8rem
	left 50%
	margin-left -.4rem
	margin-top -.4rem
	position absolute
	top 50%
	width .8rem
	z-index 1

@keyframes loading {
	0% {
		transform: rotate(0)
	}
	100% {
		transform: rotate(360deg)
	}
}