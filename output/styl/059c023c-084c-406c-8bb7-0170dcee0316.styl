.self-scroll ::-webkit-scrollbar {
  width:4px;
}
/* 滚动槽 */

.self-scroll ::-webkit-scrollbar-track {
  -webkit-box-shadow:inset006pxrgba(0,0,0,0.3);
  border-radius:10px;
}
/* 滚动条滑块 */

.self-scroll ::-webkit-scrollbar-thumb {
  border-radius:10px;
  background:rgba(255,255,255,0.8);
  -webkit-box-shadow:inset006pxrgba(0,0,0,0.5);
}

.self-scroll ::-webkit-scrollbar-thumb:window-inactive {
  background:rgba(0,0,0,0.4);
}


