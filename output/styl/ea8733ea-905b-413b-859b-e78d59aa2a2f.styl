body
	font-family 'Raleway' sans-serif

.bg
	width 100%
	height 100%
	position fixed
	background-image url('images/01.jpg')
	background-size cover
	background-repeat no-repeat
	font-family 'Raleway' sans-serif

h3
	margin 0
	padding 5px

.create
	color darken(skyblue, 30%)
	position relative
	height 100%
	width 550px
	padding 20px
	background rgba(255,255,255,0.8)
	z-index 100000
	display none
	z-index 900000 
	text-align left

	h3
		margin 10px 5px
		font-weight 400
		letter-spacing 1px
		font-size 20px


	input
		z-index 999999999999
		display block
		padding 10px
		margin 18px auto
		width 100%
		outline none
		border none


	input.submit
		font-weight 400
		letter-spacing 2px
		background lighten(skyblue, -15%)
		padding 15px
		color white
		transition all 0.3s
		&:hover
			background lighten(skyblue, -35%)
		
	input.playlistName
		background none
		color #e0848d
		font-size 20px
		margin-top 0
		border-bottom 3px solid white

	p.pre
		display none
		text-align center
		font-weight 300
		letter-spacing 1px
		padding 10px
		width 68%
		margin 0 auto
		cursor pointer
		transition all 0.3s
		&:hover
			color #e0848d

.wrapper
	width 550px
	height 460px
	position absolute
	// border-radius 3px
	left 0
	right 0
	top 10%
	margin 0 auto
	text-align center
	// margin-top 100px
	

	.login
		position relative
		height 100%
		width 550px
		padding 10px
		z-index 100000
		color white
		font-family 'Raleway' sans-serif
		h1
			font-weight 200
			width 100%

		.twitter
			width 100px
			height 100px
			cursor pointer
			transition all 0.5s
			&:hover
				transform scale(1.1);

		.logo
			width 500px
			margin 0 auto
		

	.rel
		display none
		position relative
		height 100%
		width 550px
		padding 10px
		background: lighten(rgb(255, 246, 150), 25%)
		// background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f9ec75), color-stop(100%,#fff696))
		// background: -webkit-linear-gradient(top, #f9ec75 0%,#fff696 100%)
		h3
			font-weight 200

		h3.artist
			color lighten(skyblue, -15%)
			font-size 20px
			margin-bottom 5px

		h3.track
			color #0070A6
			font-size 25px
			letter-spacing 1px
			height 35px
			overflow auto
			font-weight 300

		iframe
			width 100%
			height 300px
		.button
			// border-radius 2px
			outline none
			padding 12px
			cursor pointer
			border 1px solid transparent
			background lighten(skyblue, -15%)
			color white
			position absolute
			font-weight 300
			letter-spacing 1px
			transition all 0.3s
			&:hover
				background lighten(skyblue, -35%)
			&:disabled
				background grey
				cursor auto

		.like
			left 10px
			bottom 10px

		.dislike
			right 10px
			bottom 10px

		.next
			display none
			left 220px
			bottom 10px

