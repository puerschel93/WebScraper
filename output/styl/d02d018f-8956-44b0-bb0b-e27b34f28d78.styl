.users_myolx_view {
    .notification-message {
        box($greenLight, $greenBorder, 3px, 32px 20px 32px 100px, solid, 1px);
        clear-fix();
        margin-bottom: 20px;
        position: relative;
        min-height: 50px;

        &.icon-check::before {
            color: $green;
            font-size: remify(60px);
            left: 20px;
            position: absolute;
            top: 24px;
        }

        
        h4,
        p {
            line-height: 1.4;
            margin: 0;
        }

        h4 {
            font-size: $l;
        }
    }
    .myolxmenu {
        display: inline-block;
        margin-bottom: 0;
        padding: 0;
        position: relative;
        width: 100%;

        li {
            display: inline-block;
            list-style: none;
            position: relative;
            vertical-align: bottom;
            width: 237px;
            margin-left: 10px;

            a {
                box($greyBoxBg, $greyBorders, 3px 3px 0 0, 10px 0, solid, 1px 1px 0 1px)
                color: $blue;
                display: block;
                font-size: 20px;
                text-align: center;
                width: 100%;
                &:hover{
                    color: #369;
                    text-decoration: underline;
                }
            }
            &:first-child {
                margin: 0;
            }
            &.active {
                a {
                    background: $white;
                    color: $black;
                    font-weight: bold;
                    padding: 15px 0;
                }
                &:before, &:after {
                    border-style:solid;
                    border-width:10px 9px 0;
                    bottom: -10px;
                    content:"";
                    display:inline-block;
                    left: 44%;
                    position:absolute;
                }
                &:before {
                    background: $white;
                    border-color:transparent $greyBorders;
                    bottom:-9px;
                }
                &:after {
                    border-color:transparent $white;
                }
                &.messages {
                    &:after {
                        border-color: transparent $greyBoxBg;
                    }
                }
            }
        }
    }

    .my-items {
        box($white, $greyBorders,0 0 3px 3px, 0,solid , 1px);
        margin-top: 0;
        padding: 0;

        .item {
            border-bottom: 1px solid $greyBorders;
            list-style: none;
            overflow: hidden;

            .image {
                border-radius: 3px;
                border: 1px solid $greyBorders;
                display: inline-block;
                float: left;
                margin: 30px 25px 30px;
                max-height: 144px;
                min-height: 144px;
                padding: 2px;
                position: relative;
                text-align: center;
                width: 185px;

                .withoutimg {
                    color: $greyBorders;
                    display: block;
                    font-size: 50px;
                    margin: 0 auto;
                    max-width: 100%;
                    padding: 35px 0;
                }

                img {
                    bottom: 2px;
                    left: 2px;
                    margin: auto;
                    max-height: 144px;
                    max-width: 100%;
                    position: absolute;
                    right: 2px;
                    top: 2px;
                }

                .status {
                    background: $green;
                    color: $white;
                    font-size: 14px;
                    font-weight: bold;
                    left: -10px;
                    padding: 3px;
                    position: absolute;
                    text-transform: uppercase;
                    top: 20px;
                    width: 70%;

                    &:after {
                        border-color: #AABB00 transparent #AABB00 #AABB00;
                        border-style: solid;
                        border-width: 11px;
                        bottom: 0;
                        content: " ";
                        height: 0;
                        position: absolute;
                        right: -10px;
                        width: 0;
                    }

                    &:before {
                        border-color: #869000 transparent;
                        border-style: solid;
                        border-width: 8px 0 0 9px;
                        content: "";
                        left: 0;
                        position: absolute;
                        top: 100%;
                    }
                }

            }

            .description {
                color: $black;
                display: table;
                float: left;
                font-size: 14px;
                height: 149px;
                margin: 30px 30px 30px 0;
                width: 564px;

                .title {
                    color: $blue;
                    font-size: 20px;
                    font-weight: normal;
                    margin: 0;
                }

                .tips span {
                    display: inline-block;
                    padding: 3px;
                    &.city {
                        padding: 3px 0;
                        text-transform: capitalize;
                    }
                }

                .text {
                    color: $greyStrong;
                    font-size: 14px;
                    min-height: 47px;
                }
            }

            .price {
                float: left;
                margin: 30px 30px 30px 0;
                text-align: right;
                width: 110px;

                span {
                    color: $black;
                    font-size: 20px;
                    font-weight: bold;
                }
            }

            &:last-child {
                border-bottom: none;
            }
        }

        .expired {
            .image {
                img {
                    opacity: .5;
                }
                .status {
                    background: $greyBorders;

                    &:after {
                        border-color: $greyBorders transparent $greyBorders $greyBorders;
                    }

                    &:before {
                        border-color: $greyStrong transparent;
                    }
                }

            }

            .description {
                .title {
                    color: $greyBorders;
                }
            }
            .price {
                span {
                    color: $greyBorders
                }
            }

        }
        .deleted {
            .image {
                img {
                    opacity: .5;
                }

                .status {
                    background: $black;

                    &:after {
                        border-color: $black transparent $black $black;
                    }
                    &:before {
                        border-color: $black transparent;
                    }
                }

            }
            .description {
                .title {
                    color: $greyBorders;
                }
            }
            .price {
                span {
                    color: $greyBorders
                }
            }
        }
        .rejected {
            .image {
                .status {
                    background: $red;
                    &:after {
                        border-color: $red transparent $red $red;
                    }
                    &:before {
                        border-color: #7E2235 transparent;
                    }
                }

            }
            .description {
                .title {
                    color: $disableText;
                }
            }
            .price {
                span {
                    color: $disableText
                }
            }
        }
        .pending {
            .image {
                .status {
                    background: #ffcc44;
                    &:after {
                        border-color: #ffcc44 transparent #ffcc44 #ffcc44;
                    }
                    &:before {
                        border-color: #efa010 transparent;
                    }
                }

            }
        }
    }

    .buttons {
        display: table-row;
        height: 26px;
        vertical-align: bottom;
        .btn {
            action-button($greyBoxBg, $black, 3px, 5px 20px);
            margin-right: 10px;
            text-align: left;
            font-size: 14px;
            float: left;
            line-height: 1.5;
            text-shadow: none;
            border-color: $greyBorders;
            background: $greyBoxBg;
            background: -moz-linear-gradient(top, $greyBoxBg 0%, #f1f1f1 100%);
            background: -ms-linear-gradient(top, $greyBoxBg 0%,#f1f1f1 100%);
            background: linear-gradient(to bottom, $greyBoxBg 0%,#f1f1f1 100%);

            &:before {
                line-height: 1.5;
                margin: -2px 5px 0 2px;
            }

            &.icons:hover {
                color: fontcolor;
                border-color: $greyStrong;
                background: $greyBoxBg;
                background: -moz-linear-gradient(top,  #f6f6f6 0%,$greyBoxBg 100%);
                background: -ms-linear-gradient(top, #f6f6f6 0%,$greyBoxBg 100%);
                background: linear-gradient(to bottom, #f6f6f6 0%,$greyBoxBg 100%);
            }

            &.btnfeaturedad {
                border-radius();
                action-button($orange, $white, 3px, 5px 20px 5px 40px);
                position: relative;
                &:hover {
                    background-color: $orange;
                    border-color: rgba(0, 0, 0, .1) rgba(0, 0, 0, .1) rgba(0, 0, 0, .25);
                }
                span {
                    position: absolute;
                    left: 15px;
                    top: 0;
                    color: $white;
                    font-size: 19px;
                }
            }
        }
        .orange {
            border-radius();
            action-button($orange, $white, 3px, 5px 20px);
        }
    }

    .empty {
        font-size: $l;
        padding: 40px 0;
        text-align: center;
        color: $disableText;
    }

    .removeAd {
        opacity: .5
        .removeItem {
            cursor: default;
        }
    }

}
