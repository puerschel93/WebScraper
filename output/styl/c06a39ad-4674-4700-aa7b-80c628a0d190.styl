@import "../nib"

* 
    margin 0
    padding 0

body
    background #3D4043
    overflow hidden

body, input, textarea, button
    font-family 'Open Sans'
    font-size 16px
    color white

img
    border 0

a
    color white
    text-decoration none

    &:hover
        text-decoration underline


::selection
    background-color #29b1ff

/* CHAT */
.chat 
    .chatbox
        padding 20px 5%
        margin-bottom 20px

        .chatform
            position relative

            &.sending:after
                content " "
                absolute top left
                absolute bottom right
                background rgba(61, 64, 67, 0.6) url(/images/website/form-sending.gif) center center no-repeat
                z-index 9


            input[type="text"]
                background #515458
                border 1px solid rgba(255,255,255, 0.30)
                font-size 15px
                border-radius 3px
                padding 3px
                padding-bottom 30px
                outline 0
                box-sizing border-box
                width 100%

            .publish
                background #29b1ff url(/images/website/submit-esquina.png) top left no-repeat
                position absolute
                right 0
                bottom 0
                padding 5px 20px
                font-size 12px
                text-transform uppercase
                padding-left 30px
                border-bottom-right-radius 3px

                span
                    margin-right 5px

    .messages
        position absolute
        overflow-y scroll
        -webkit-overflow-scrolling touch
        top 100px
        bottom 20px
        absolute right left

        .message
            padding 10px 0
            position relative
            overflow hidden
            text-shadow .5px .5px rgba(0, 0, 0, 0.4)
            border-left 7px solid transparent
            transition background-color .5s ease-out

            &.sameuser
              background #2e3032
              border-left 7px solid #29afff

            &.destacado
              .avatar
                &:after
                  content " "
                  background url(/images/website/staff.png)
                  width 14px
                  height 14px
                  display block
                  absolute bottom 1px right 1px

                img
                  border-color white



            p
              font-size 13px
              line-height 15px
              margin 0 5px
              margin-left 51px

            .avatar
              float left
              position relative
              margin 0 10px

              img 
                display block
                border 1px solid rgba(255, 255, 255, 0.2)


            .user
              font-weight bold

            .time
              absolute right 25px top 
              color #bbb
              transition opacity .2s ease-out
              opacity 0

              small
                font-size 12px

            .borrar
              background url("/images/website/borrar.png") no-repeat
              absolute top 5px right 5px
              height 14px
              width 14px

              &.ready
                background-color red

            .responder
              position absolute
              background rgba(0,0,0,.7) url("/images/website/respon-icn.png") no-repeat center
              width 32px
              height 32px
              absolute left 10px top 10px
              transition opacity 0.2 ease-out
              opacity 0

              &:hover
                opacity 1

            &:hover
              .time
                opacity 1


/* LOGIN */
#login
    absolute top left
    absolute bottom right
    z-index 9
    display none

    &.show
        display -webkit-box
        display -moz-box
        display -ms-box
        display box
        box-pack center
        box-align center

    .overlay
      absolute top left
      absolute bottom right
      background rgba(255, 255, 255, 0.5)
      cursor pointer

    .panel
      background #3d4043
      padding 20px 15px
      font-size 18px
      text-transform uppercase
      box-shadow 3px 3px 0 #272b2e
      position relative

      p
        margin-bottom 15px


      a
        display inline-block
        font-size 15px
        padding 15px 8px
        padding-right 55px
        border 1px solid #5672b4
        cursor pointer
        transition border-color .5s ease-out
        background #3b5998
        background-position 140px center
        background-repeat no-repeat

        &:hover
          text-decoration none

        &.facebook
          margin-right 10px
          background-image url(/images/website/fb.png)

          &:hover
            border-color #8da5ec

        &.twitter
          background-color #00aee8
          border-color #49c9ff
          background-image url(/images/website/tt.png)

          &:hover
            border-color #9dffff
    

/* FOOTER */

footer
    text-align center
    font-size 11px
    text-transform uppercase
    position absolute
    bottom 0
    left 0 
    right 0

    a
        color #bbb
        margin 0 5px


@media screen and (max-width:458px)
  #login
    .panel
      padding 15px 10px
      font-size 15px

      p
        margin-bottom 10px

      a
        font-size 12px
        padding 12px 5px
        background-position 113px center
        padding-right 50px

        &.facebok
          margin-right 7px

