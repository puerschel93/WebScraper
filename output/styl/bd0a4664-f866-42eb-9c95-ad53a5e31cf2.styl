@media (max-width 1200px)
    *
      font-size 16px
    .container 
        max-width 960px
    .promo
        height 905px
        img
            width 80%
        &__circle
            transform scale(0.8)
        &__rectangle
            transform scale(0.8)
        .button-mini
            font-size 0.9em
    .feature
        .card
            padding 24px 4px 0
            &-img
                width 40px
                height 40px
    .place
        &__descr
            .text
                margin-bottom 20px
            &-item
                margin-bottom 0
            &-round
                transform scale(0.8)
        &__media
            transform scale(0.8)
    .reviews
        &__grid
            gap 10px 10px
    .footer
        .rectangle
            display none
        .circle 
            display none
@media (max-width 992px) 
    *
        font-size 16px
    .container 
        max-width 720px
    .promo
        height 830px
        &__circle
            transform scale(0.8)
        &__rectangle
            transform scale(0.8)
    .feature
        &__carousel
            display flex
            justify-content space-between
            flex-wrap wrap
            width 85%
            gap 1%
            position unset
            margin 0 auto
            transform none
            .card
                margin-bottom 20px
                padding 24px 10px 0
                &:first-child, &:last-child
                    opacity 1
                &:last-child
                    flex 1
                    justify-content center
         &__button
            margin-top 62px
    .place
        &__descr
            // min-width 309px
            .text
                margin-bottom 20px
            &-item
                margin-bottom 0
            &-round
                transform scale(0.8)
        &__media
            transform scale(0.8)
    .work
        &__media 
            position relative
            transform scale(0.8)
            left -59px
            width 404px
        &__descr
            margin-left 0
    .reviews
        &__grid
            gap 10px 10px
    .footer
        .menu-first, .menu-second
            margin-right 10px
        .menu-third
            max-width 186px
@media (max-width 768px)
    *
        font-size 14px
    .container
        max-width 540px
    .promo
        height 500px
        position relative
        &__media
            img 
                display none
        &__rectangle
            transform translate(-100%, -160%) rotate(45deg)
            animation none
        &__circle
            display none
    .feature
        margin-bottom 40px
        .companies
            flex-wrap wrap
            justify-content center
            gap 5%
            margin-bottom 40px
            img
                margin-bottom 10px
        &__carousel
            width 100%
            .card
                flex-direction column
                align-items center
                padding-top 10px
                &-img
                    margin-bottom 10px
                &-descr
                    text-align center
                &:last-child
                    justify-content normal
    .divider
        margin-bottom 40px
    .place
        margin-bottom 40px
        height auto
        .container
            flex-wrap wrap-reverse
        &__descr
            padding-top 40px
            text-align center
            &-item 
                flex-direction column
                margin-bottom 15px
                .outline
                    display inline-flex
            
    .work
        margin-bottom 40px        
        .container
            flex-direction column
        &__media
            position unset
            left unset
        &__descr
            text-align center
            width unset
        &__button
            margin 0 auto 10px

    .reviews
        margin-bottom 40px
        &__descr
            margin-bottom 40px
        &__grid
            margin-bottom 40px
            &-card
                width 45%
    .plan
        padding-top 40px
        &__descr
            margin-bottom unset
        .variant
            display flex
            flex-wrap wrap
            &__name
                width 60%
            &__list
                width 40%
            &__cost
                transform translateY(-50%)
    .footer
        padding-top 40px
        .wrapper
            flex-direction column
        &__descr
            display flex
            width unset
            margin-bottom 23px
            .text
                margin-bottom unset
                text-align center


@media (max-width 576px) 
    .container 
        width 100%
        padding 0 10px
    .promo
        height 100vh
        padding-top 40%
        .hamburger 
            display flex
        .wrapper
            display none
        &__descr
            width unset
            z-index 1
            position relative
        &__media
            position unset
        &__circle
            display none
        &__rectangle
            position absolute
            transform rotate(45deg) scale(1.6)
            top 17%
            left 3%
    .feature
        .companies
            justify-content space-between
            width 90%
        &__text
            width unset
            margin-bottom 40px
        &__carousel
            width 80%
            justify-content center
            .card:last-child
                flex none
        &__button
            margin-top 0
    .place
        &__descr
            z-index 1
        &__media
            .frame
                display none
            img
                display none
        &-circle
            position absolute
            background cyan-clr
    .work
        position relative
        &__descr
            z-index 1
        &-circle
            display none
        &__media
            img
                display none

    .reviews
        padding-top 40px
        &__descr
            z-index 1
            width unset
            margin-bottom 20px
            position relative
        &__grid
            &-card
                width 90%
                height unset
        &-circle
              display none
    .plan
        padding-top 0
        text-align center
        &__header
            flex-wrap wrap
            justify-content center
        .variant
            flex-direction column
            align-items center
            gap 15px
            &__cost
                transform none
    .footer
        &__descr
            flex-direction column
            flex-wrap wrap
            align-items center
            gap 10px
        &__menu
            flex-direction column
            align-items center
        .cellar
            flex-direction column-reverse
            .social
                margin-bottom 15px