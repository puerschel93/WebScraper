.dates {

    &-wrap {
        border: 2px solid $dashboard-color-light-grey;
        border-bottom-left-radius: $border-radius;
        border-bottom-right-radius: $border-radius;
        box-shadow: $shadow;
        padding: 1rem;
        min-width: 24rem;

        @media $small {
            min-width: auto;
        }

        &.datetime {
            .dates-time {
                grid-template-columns: 1fr 1fr 1fr 1fr;

                .dates-time-input-wrap {
                    border-radius: $border-radius;
                    border: 2px solid $dashboard-color-light-grey;

                    input {
                        height: 2rem;
                    }
                }
            }
        }

        .dates-time {
            .dates-time-title {
                grid-column-end: span 3;
            }
            .dates-time-hrs, .dates-time-mins {
                padding: 0 1.125rem;
            }
        }

        @media $small {
            top: 0 !important;
            width: 100vw !important;
            margin-top: 0 !important;
        }
    }

    &-header {
        margin: 0.75rem 0;
        // background-color: $dashboard-color-light-grey;
        font-weight: 600;
        border-radius: $border-radius;

        .arrow.next {
            font-size: 0;
            background-image: url('/icons/Icon-ArrowRight.svg');
            background-size: 1rem auto;
            background-position: center;
            background-repeat: no-repeat;
        }

        .arrow.prev {
            font-size: 0;
            background-image: url('/icons/Icon-ArrowLeft.svg');
            background-size: 1rem auto;
            background-position: center;
            background-repeat: no-repeat;
        }

        .month {
            font-weight: 600;
            color: $dashboard-color-black;
            padding-right: 0.15rem
        }

        .year {
            font-weight: 600;
            color: $dashboard-color-black;
            padding-left: 0.15rem
        }

    }

    &-close {
        line-height: 1rem;
        font-size: 1.2rem;
        margin-bottom: 1rem;
        cursor: pointer;
    }

    &-time {

        input, select {
            background: none;
            border: none;
            color: $dashboard-color-primary;
            font-weight: 600;
            padding: 0 0.5rem;
            &::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }
        }
    }

    .date {
        border-radius: $border-radius;
    }

    .day {
        background-color: $dashboard-color-light-grey;
        font-weight: 600;
    }

    .date.selected {
        background-color: $dashboard-color-primary;
        color: white;
        font-weight: 600;

        &:hover {
            background-color: $dashboard-color-primary;
            color: white;
        }
    }

}
