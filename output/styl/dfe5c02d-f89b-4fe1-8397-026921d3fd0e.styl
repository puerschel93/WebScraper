          width: 290px
          display: block
          color: rgba(51, 51, 51, 1)
        .num
          color: rgba(102, 102, 102, 1) 
        .recv
          background: #FEECEA
          color: #F9482E
          padding: 2px 10px
          display: inline-block
          margin-top: 24px
      .second
        color: rgba(201, 201, 201, 1)
        margin-top: 17px
      .all_price
        text-align: right
        display: flex
        align-items: center
        justify-content: flex-end
        font-size: 24px
        color: rgba(101,101,101,1)
        .all_num
          line-height: 1
          font-weight: bold
          font-size: 28px
          color: #F9482E
