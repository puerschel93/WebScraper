page
  background-color: #F7F8FA
  &:before
    display: none
.content
  padding: 24px 32px
  :global
    .at-radio::before
      border: 0
    .at-float-layout .layout-header
      background: #fff
      padding: 32px
    .at-float-layout .layout-header
      border-bottom: 2px solid rgba(242,242,242,1)
      border-radius: 18px 18px 0 0
    .at-float-layout .layout-header__title
      text-align: center
      font-weight: 500
      padding: 0 80px
    .layout-header__btn-close::before,
    .layout-header__btn-close::after
      background: #333
    .at-float-layout--active .at-float-layout__container
      border-radius: 18px 18px 0 0
    .at-radio__icon
      visibility: visible
      font-size: 36px
    .at-input::after,
    .at-form::after,
    .at-switch::after
      border-color: #efefef
    .at-radio__icon .at-icon
      color: #ffffff
      border: 2px solid #ddd
      padding: 5px
      border-radius: 50%
    .at-radio__icon--checked .at-icon-check
      background: #F9482E
      color: #fff
      border-radius: 50%
      padding: 5px
      border:1px solid #F9482E
    .at-radio__option-container
      position: relative
    .at-radio__icon
      position: absolute
      left: 0
      top:-2px
    .at-radio__title
      margin-left: 80px
      font-size: 28px
      font-weight: 500
      line-height: 48px
    .at-radio
      margin-bottom: 50px
    .at-textarea
      border: 0px
    .at-textarea__textarea
      font-size: 28px
      line-height: 35px
      color: #999
.product_box
  padding: 24px
  background:rgba(255,255,255,1);
  border-radius 12px;
  margin-bottom: 24px
  .title
    font-size: 28px 
    line-height: 40px
    display: flex
    align-items: center
    position: relative
    .icon_shop
      font-size: 28px
      color: rgba(50, 50, 50, 1)
    .font
      margin-left: 16px
    .status_box
      position: absolute
      right: 0
      top: 0
      font-size: 28px
      color: #656565
      display: flex
      align-items: center
    .red
      color: #F9482E
  .info_box
    display: flex
    margin-top: 24px
    .img
      width: 178px
      height 178px
      display: block
      margin-bottom: 0
      flex-shrink: 0
      border-radius:6px;
    .info_right
      margin-left: 24px
      padding-top: 16px
      flex: 1
      .income_container
        height: 52px
      .item_line
        display: flex
        align-items: center
        justify-content: space-between
        font-size: 24px
        line-height: 24px
