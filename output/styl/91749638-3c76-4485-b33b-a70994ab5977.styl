// Project fonts
$inter-font-family = "Inter"
$inter-font-base-path = "../fonts/Inter/"
$roboto-font-family = "Roboto, Arial, Helvetica, sans-serif"
$roboto-font-base-path = "../fonts/Roboto/"
$fonts-formats = woff2 woff

font-face(
    local_name: "Roboto",
	family: $roboto-font-family,
	file-name: "roboto-300",
	base-path: $roboto-font-base-path,
	formats: $fonts-formats,
	weight: 300,
	style: normal
)

font-face(
    local_name: "Roboto",
	family: $roboto-font-family,
	file-name: "roboto-400",
	base-path: $roboto-font-base-path,
	formats: $fonts-formats,
	weight: 400,
	style: normal
)

font-face(
    local_name: "Roboto",
	family: $roboto-font-family,
	file-name: "roboto-italic",
	base-path: $roboto-font-base-path,
	formats: $fonts-formats,
	style: italic
)

font-face(
    local_name: "Roboto",
	family: $roboto-font-family,
	file-name: "roboto-500",
	base-path: $roboto-font-base-path,
	formats: $fonts-formats,
	weight: 500,
	style: normal
)

font-face(
    local_name: "Roboto",
	family: $roboto-font-family,
	file-name: "roboto-700",
	base-path: $roboto-font-base-path,
	formats: $fonts-formats,
	weight: 700,
	style: normal
)

font-face(
    local_name: "Roboto",
	family: $roboto-font-family,
	file-name: "roboto-900",
	base-path: $roboto-font-base-path,
	formats: $fonts-formats,
	weight: 900,
	style: normal
)

font-face(
    local_name: "Inter",
	family: $inter-font-family,
	file-name: "Inter-Bold",
	base-path: $inter-font-base-path,
	formats: $fonts-formats,
	weight: 700,
	style: normal
)

font-face(
    local_name: "Inter",
	family: $inter-font-family,
	file-name: "Inter-Regular",
	base-path: $inter-font-base-path,
	formats: $fonts-formats,
	weight: 400,
	style: normal
)
