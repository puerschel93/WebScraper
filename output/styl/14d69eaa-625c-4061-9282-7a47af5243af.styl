btnColor = #f7793e
.container
  background-color #fff
  .banner
    height 360px
    background-color #ff9b6c
    margin-bottom 110px
    .swiper-container
      >>> .swiper-pagination-bullet
        border 2px solid #fff
        width 10px
        height @width
        background none
        opacity 0.6
        box-sizing border-box
        &.swiper-pagination-bullet-active
          background #fff
          opacity 1
      width 100%
      height 360px
      .swiper-wrapper
        height 360px
        cursor pointer
        .swiper-slide
          img
            width 100%
            height 100%
            object-fit cover
            font-family 'object-fit: cover'
      .swiper-pagination
        bottom 60px
    .nav
      display flex
      justify-content space-around
      margin-top -50px
      height 150px
      background-color #fff
      z-index 11
      position relative
      box-shadow 0px 2px 14px 0px rgba(150, 164, 180, 0.28)
      li
        display flex
        flex-direction row
        cursor pointer
        &:first-child
          .right
            .name:after
              width 36px
              height 18px
              display inline-block
              right -10px
              top 2px
              position relative
              content url('./img/icon-mack-hot.png')
        .right
          display flex
          flex-direction column
          justify-content center
          span
            font-size 14px
            color #777
            display block
            &:first-child
              font-size 18px
              color #222
              margin-bottom 13px
      .icon
        width 100px
        margin-right 20px
        background-position center
        background-repeat no-repeat
        background-size 85px
  .WORKS
    padding-top 78px
    margin-bottom 60px
    height 75px
    background-image url('./img/icon-works.png')
    background-position center bottom
    background-repeat no-repeat
  .group
    overflow hidden
    &:nth-of-type(odd)
      background-color #f5f5f5
    #certify-swiper
      position relative
      margin 0 auto
      width 1300px
      padding-bottom 60px
      .swiper-slide
        width 292px
        height 400px
        background #fff
        box-shadow 0 8px 30px #ddd
        text-align center
        font-size 0
    ul
      &.list
        width 100%
        display flex
        margin-bottom 80px
        justify-content space-between
        li
          width 310px
          .img
            width 100%
            height 188px
          .abs
            overflow hidden
      li
        display inline-block
        box-shadow 0 8px 30px #ddd
        font-size 0
        cursor pointer
        position relative
        &:hover
          .exp
            opacity 1
        .img
          width 292px
          height 400px
          object-fit contain
          font-family 'object-fit: contain'
        .text
          background #fff
          padding 20px
          p
            text-align left
          .name
            margin-bottom 15px
            line-height 1
            color #444
            font-size 18px
          .abs
            font-size 14px
            overflow hidden
            color #888
        .exp
          position absolute
          background rgba(247, 121, 62, 0.3)
          text-align center
          width 100%
          top 0
          opacity 0
          height 100%
          transition bottom 0.35s
          align-items center
          justify-content center
          display flex
          .exp-text
            position absolute
            width 100%
            bottom 0
            left 0
            display flex
            padding 20px
            flex-direction column
            box-sizing border-box
            align-items self-start
            .name
              color #fff
              font-size 18px
              font-weight bold
              margin-bottom 10px
            .abs
              color #fff
              font-size 14px
              max-height 50px
              overflow hidden
              line-height 24px
              opacity 0.9
          img
            width 130px
            height @width
      &.library
        li
          width 260px
          position relative
          .text
            position absolute
            bottom 0
            background none
            color #fff
          .img
            height 350px
      &.magazine
        li
          width 230px
          position relative
          transition all 0.3s ease
          border-radius 4px
          overflow hidden
          &:hover
            z-index 1
            transform scale(1.1)
          .img
            width 230px
            height 196px
      &.worksList
        li
          width 240px
          position relative
          transition all 0.3s ease
          border-radius 4px
          box-shadow none
          .img-box
            transition all 0.3s ease
            position relative
            .icon
              width 70px
              height 95px
              left 4px
              top -5px
              position absolute
              background-position center
              background-repeat no-repeat
              &.read
                background-image url('./img/icon-type-read.png')
              &.teach
                background-image url('./img/icon-type-teach.png')
              &.library
                background-image url('./img/icon-type-library.png')
              &.magazine
                background-image url('./img/icon-type-magazine.png')
            &:hover
              z-index 1
              box-shadow -3px 8px 18px 0px rgba(104, 65, 26, 0.28)
              transform translateY(-20px)
          .text
            padding 0
            margin-top 20px
            background none
            .name
              text-align center
              white-space nowrap
              text-overflow ellipsis
            .abs
              font-size 15px
              text-align center
              white-space nowrap
              text-overflow ellipsis
          .img
            border solid 1px #e1e1e1
            width 100%
            height 328px
            border-radius 4px
            background-color #efefef
            box-sizing border-box
      &.partner
        display block
        flex-direction column
        font-size 0
        li
          width 308px
          box-shadow none
          margin-right 22px
          margin-bottom 20px
          &:nth-of-type(4n)
            margin-right 0
          .img
            width 260px
            height 118px
            border none
    &.shift
      padding-bottom 70px
      .title
        padding-bottom 20px
      .part
        padding 70px 0
      .use
        width 98px
        height 38px
        cursor pointer
        background-color #f7793e
        border-radius 4px
        color #fff
        text-align center
        font-size 14px
        outline none
        display block
        margin 0 auto
        border none
    .title
      text-align center
      padding 55px 0
      background none
      font-size 26px
      color #444
      font-weight bold
      &:before
        content url('./img/x-book-shift.png')
        position relative
        left -10px
        top -5px
      &:after
        content url('./img/x-book-shift.png')
        position relative
        right -10px
        top -5px
    p
      font-size 16px
      color #555
      text-align center
.part
  width 1300px
  margin 0 auto
  display flex
.cfx
  // padding-top 80px
  justify-content space-around
  .core
    // height 200px
    text-align center
    cursor pointer
    &:hover
      color #f88a55
    h3
      font-size 15px
      line-height 24px
      color #888
      font-weight normal
      padding 20px 0 10px
    .img
      height 120px
      width @height
      background-position center
      background-repeat no-repeat
      transition 0.3s
      background-size 110%
