@import './variable'

/*汇总样式*/
.stat
  .title
    height: 70px
    width: 50px
    line-height: 70px
    display: inline-block
    border-radius: 0px 10px 10px 0px
    background-color: #fff
    text-align: center
    font-weight: bold
    box-shadow: $box-shadow
    border: $border
    border-left: 10px solid $color-primary
  div
    .item
      margin-right: 5px
      height: 70px
      line-height: 70px
      padding: 0px 20px
      display: inline-block
      background-color: #fff
      border-radius: 10px
      box-shadow: $box-shadow
      border: $border
      span
        font-size: 24px
        line-height: 0px
        font-weight: bold

/*input计数器 append样式*/
.el-input-number
  .el-input-group__append
    position: absolute
    top: 0
    right: 85px
    color: #ccc
    padding: 0px
    width: auto
    border: none
    background: none
    line-height: 36px
    user-select:none

// 表单内label有下列选择框时的样式
.select-form-item
  .el-form-item__label
    padding: 0px 8px 0px 0px
    line-height: 36px
    .el-input__icon
      width: 20px
    .el-input__inner
      padding-right: 20px

.select-icon-25
  .el-input__icon
      width: 25px
  .el-input__inner
    padding-right: 25px

.primary-border
  border: $border
  box-shadow: $box-shadow

// 顶部搜索框样式
  .search-bar
    display: flex
    padding: 5px
    background: #fff
    border: $border
    border-radius: 5px
    box-shadow: $box-shadow
    flex-wrap: wrap
    >div, >button
      margin-bottom: 0px
      margin-top: 2px
      margin-right: 5px
      white-space: nowrap
    >.el-date-editor
      width: 135px
      .el-range__close-icon
        float: none
    .el-button+.el-button
      margin-left: 0px
    >.label
      line-height: 30px
      margin: 0px 5px 0px 10px
      color: #909399
    .btn-wrapper
      flex: 1 1 100%
      margin: 2px 0px 0px
      &.inline
        flex: auto
      .el-button+.el-button
        margin-left: 2px

// echarts 小圆点样式
  .echarts-point
    display:inline-block
    margin-right:5px
    border-radius:10px
    width:9px
    height:9px

// Tab 标签切换
  .tabs-switch
    .el-tabs__header
      margin: 0
      border: none

// 页面底部栏样式
  .pages-footer
    display: flex
    justify-content: space-between

// 树形与表格联动选中样式
  .table-row-cur
    >td
      background: rgb(246, 240, 238)

  .tree-row-cur
    background: rgb(246, 240, 238)

// dialog 右上角 X 隐藏
  .el-dialog
    border-radius: 6px
    &.body-p-b-15
      .el-dialog__body
        padding-bottom: 15px
    &.header-none
      .el-dialog__header
        padding: 0px
    // .el-form
    //   .el-form-item:last-child
    //     margin-bottom: 0px

  .tx-c-input
    .el-input__inner
      text-align: center

// 表格样式
  .el-table
    &.table-tx-c
      .cell, th>div, th>.cell
        text-align: center
    &.table-padding-none
      .cell, th>div
        padding: 0px
    &.height-auto
      td, th
        height: auto
    .info-row
      background: #c9e5f5
    .positive-row
      background: #e2f0e4
    .warning-row
      background: oldlace

  // breadcrumb 面包屑导航
    .breadcrumb
      margin-bottom: 5px
      box-sizing: border-box
      padding: 5px 15px
      line-height: 30px
      background: #fff
      border: $border
      border-radius: 5px
      box-shadow: $box-shadow

  // 轨迹回放的信息窗口
  .info-windows
    font-size: 14px
    text-align: left
    background: #fff
    &.mini
      p
        a:first-child
          flex-basis: auto
    h1
      border-bottom: 1px solid currentColor
      &.monitor
        a
          &:first-child
            font-size: 17px
          span
            display: inline-block;
            max-width: 125px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            vertical-align: middle;
          i
            font-size: 12px
            color: #999
            font-style: normal
      a
        line-height: 22px
        &:first-child
          font-size: 20px
        &:last-child
          float: right
          img
            height: 20px
            vertical-align: middle
    p
      display: flex
      align-items: center
      margin: 6px 0px
      &.btn-wrapper
        display: flex
        flex-wrap: wrap
        justify-content: space-around
        button
          flex: 1 1 auto
          line-height: 20px
          margin-right: 2px
          i
            display: block
      a
        display: inline-block
        font-size: 12px
        &:first-child
          flex: 0 0 60px
          font-weight: bold
          color: #303133
        &:last-child
          flex: 1 1 auto
          padding-left: 15px
          color: #606266
    &.info-windows-pledge>p
      >a:first-child
        flex: 0 0 40px
      >a:last-child
        padding-left: 0px


  .el-icon-star-on
    cursor: pointer
    color: #F7BA2A
    padding: 0 10px
  .el-icon-star-off
    cursor: pointer
    padding: 0 10px

  .el-button
    >.el-icon-star-on
      padding: 0px
    >.el-icon-star-off
      padding: 0px

  .el-tree
    &.background-none
      background: transparent
    &.border-none
      border: none

  .el-collapse
    &.padding-none
      .el-collapse-item__content
        padding: 0px

  .el-alert
    .el-alert__content
      width: 100%

  .el-tabs
    &.el-tabs--card,
    &.el-tabs--border-card
      .el-tabs__item
        &:nth-child(2)
          padding-left: 0px
        &:last-child
          padding-right: 0px
    &.el-tabs--card,
    &.el-tabs--border-card
      >.el-tabs__header
        >.el-tabs__nav-wrap
          >.el-tabs__nav-scroll
            >.el-tabs__nav
              >.el-tabs__item
                &:nth-child(2)
                  padding-left: 20px
                &:last-child
                  padding-right: 20px
    &.body-padding-0
      .el-tabs__content
        padding: 0px
    &.height-100p
      height: 100%
      display: flex
      flex-direction: column
      .el-tabs__header
        flex: 0 0 auto
      .el-tabs__content
        flex: 1 1 auto
        height: 100%
        .el-tab-pane
          height: 100%
    .el-tabs__item:nth-child(2)
      padding-left: 0px

  .el-date-editor
    .el-range-input
      width: 34%
    &.el-date-editor--datetimerange
      .el-range-input
        width: 112px
      .el-range__close-icon
        width: 24px

  .split-box
    position: relative
    height: 40px
    width: 100%
    .line
      position: absolute
      top: 50%
      width: 100%
      height: 1px
      background-color: #ccc
    .text
      position: absolute
      padding: 0px 10px
      left: 50%
      top: 50%
      transform: translateX(-50%) translateY(-50%)
      background-color: #fff

  .ui-resizable-handle
    background: rgba(255, 255, 255, .01) //IE浏览器兼容
    &.ui-resizable-w
      width: 5px
      &:hover
        border-right: 1px dashed $color-primary
    &.ui-resizable-n
      height: 5px
      &:hover
        border-bottom: 1px dashed $color-primary

  .ui-resizable-helper-top
    border-top: 1px dotted $color-primary
  .ui-resizable-helper-left
    border-left: 1px dotted $color-primary

  .shrink-top
    position: absolute
    z-index: 200
    top: -12px
    left: 50%
    width: 50px
    height: 12px
    line-height: 12px
    transform: translateX(-50%)
    border: 1px solid #ccc
    border-bottom: none
    border-radius: 5px 5px 0px 0px
    color: $color-primary
    background: rgba(255, 255, 255, .8)
    text-align: center
    font-size: 12px
    cursor: pointer

  .shrink-left
    position: absolute
    z-index: 200
    left: -12px
    top: 50%
    width: 12px
    height: 50px
    line-height: 50px
    transform: translateY(-50%)
    border: 1px solid #ccc
    border-right: none
    border-radius: 5px 0px 0px 5px
    color: $color-primary
    background: rgba(255, 255, 255, .8)
    text-align: center
    font-size: 12px
    cursor: pointer

  .userDeviceBindForm
    .el-form-item
      display: inline-block
      width: 100%
