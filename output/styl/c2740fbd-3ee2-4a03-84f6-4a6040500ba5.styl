html, body, main, header, article, footer, nav, div, input,
button, textarea, svg, svg > *, span, a, p, small, form,
q, b, i, label, section, h1, h2, h3, h4, h5, h6, img, ul, li,
dl, dt, dd, select, optgroup, pre, code
	margin: 0
	padding: 0
	background: none
	border: none
	color: inherit
	outline: none
	-webkit-box-sizing: border-box
	box-sizing: border-box
	transition: none
	&:before, &:after
		margin: 0
		padding: 0
		background: none
		border: none
		color: inherit
		outline: none
		-webkit-box-sizing: border-box
		box-sizing: border-box
		transition: none

[lock-scroll='true']
	overflow: hidden !important

button, .icon, .block-select
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

b, strong
	font-weight: 700

ul, ol
	list-style: none

a, button, input[type='button']
	cursor: pointer

.hidden, .hide
	display: none !important

.visually-hidden
	position: absolute !important
	overflow: hidden
	clip: rect(0 0 0 0)
	height: 1px
	width: 1px
	margin: -1px
	padding: 0
	border: 0

.visibility-hidden
	visibility: hidden

.image-square
	position: relative
	height: auto
	&:before
		content: ''
		padding-top: 100%
		float: left
	img
		position: absolute
		top: 0
		left: 0
		height: 100%
		width: 100%
		-o-object-fit: contain
		object-fit: contain

.image-square-height
	position: relative
	width: auto
	&:before
		content: ''
		padding-left: 100%
		float: left
	img
		position: absolute
		top: 0
		left: 0
		height: 100%
		width: 100%
		-o-object-fit: contain
		object-fit: contain

hr.seperator
	border: none
	border-top: var(--seperator-top)
	border-bottom: var(--seperator-bot)

@import '/src/styles/flex'
@import '/src/styles/font'
@import '/src/styles/grid'
@import '/src/styles/rtf_content'
@import '/src/styles/variables'

body
	-webkit-font-smoothing: antialiased
	-webkit-text-size-adjust: 100%
	color: var(--font-base-clr)
	font-size: var(--font-base-size)
	font-family: var(--font-base-stack)
	font-weight: var(--font-base-weight)

html, body, main#App
	width: 100%
	height: 100%
	background none
	background-color: var(--bg-clr)

main#App
	z-index: 0
	position: relative
	overflow-y: auto
	overflow-x: hidden
	background-color: var(--bg-clr)
	> section:not(.auto-height)
		min-height: 100%
		width: 100%

#BetaLabel
	position: absolute
	top: .5em
	padding: .25em .5em
	border: solid .1em var(--color-complementary)
	background-color: var(--bg-clr)
	color: var(--color-complementary)
	border-radius: .5em
	@media screen and (min-width: 1000px)
		left: 50%
		transform: translate(-50%,0)
	@media screen and (max-width: 999px)
		position: relative
		display: block
		top: 1em
		left: 1em
		margin-bottom: 1em
		border-radius: 1em
		width: calc(100% - 2em)
		text-align: center
		padding: .5em 1em

#AppIcons
	position: absolute
	width: 0
	height: 0

#AppLangSelect
	z-index: 40
	position: fixed
	right: 1em
	animation: localeSelectIn var(--transition-easing) 1.5s alternate backwards
	.selected
		padding: .5em 1em
		background-color: var(--fg-clr)
		border-radius: .5em
		box-shadow: var(--shadow-2)
		transition: var(--transition)
		.label
			margin-right: .5em
		.icon
			font-size: 1.25em
		&:hover
			background-color: var(--color-accent)
			color: #fff
			.icon
				&.fill > *, .fill
					fill: #fff
	.options
		position: absolute
		right: 0
		min-width: 100%
		padding: .5em
		border-radius: .5em
		box-shadow: var(--shadow-4)
		background-color: var(--fg-clr)
		transition: var(--transition)
		transition-property: transform, opacity
		will-change: transform, opacity
		.option
			padding: .5em 1em
			border-radius: .25em
			transition: var(--transition)
			transition-property: background-color, color
			will-change: background-color, color
			> .label
				margin-right: .5em
			&:hover
				background-color: var(--font-base-clr-015)
			&:active
				background-color: var(--font-base-clr-025)
			&.active
				background-color: var(--color-accent)
				color: #fff
	&.active .selected
		visibility: hidden
	&:not(.active)
		.options
			opacity: 0
			pointer-events: none
	@media screen and (min-width: 1200px)
		top: 1em
		right: 1em
		.options
			top: 0
		&:not(.active) .options
			transform: translateY(-.5em)
	@media screen and (max-width: 1199px)
		bottom: 1.5em
		right: 1.5em
		.options
			bottom: 0
		&:not(.active) .options
			transform: translateY(.5em)

#AppLoader, #InvalidLocaleSelect
	position: fixed
	top: 0
	right: 0
	bottom: 0
	left: 0

#AppLoader
	background-color: #fff
	@media (prefers-color-scheme: dark)
		background-color: #000
	.icon.loader
		width: 6em
		height: 6em

#InvalidLocaleSelect
	font-size: 1.25em
	> .option
		padding: .5em
		border-radius: .5em
		background-color: var(--fg-clr)
		box-shadow: var(--shadow-1)
		transition: var(--transition)
		transition-property: background-color, box-shadow, color, transform
		will-change: background-color, box-shadow, color, transform
		&:hover
			box-shadow: var(--shadow-3)
			transform: translateY(-.25em)
		&:active, &:focus
			box-shadow: var(--shadow-1)
			transform: translateY(.15em)
			background-color: var(--color-accent)
			color: #fff

@keyframes localeSelectIn
	0%
		opacity: 0
		transform: translate(-2em,0)
	100%
		opacity: 1
		transform: translate(0,0)

// Icons .......................................................................

.icon
	> *
		transition: var(--transition)
		transition-property: fill, stroke
		will-change: fill, stroke
	&.fill > *, .fill
		fill: var(--font-base-clr)
	&.stroke > *, .stroke
		stroke: var(--font-base-clr)
	&.contrast
		&.fill > *, .fill
			fill: var(--font-heading-clr)
		&.stroke > *, .stroke
			stroke: var(--font-heading-clr)
	&-tiny
		width: .75em
		height: .75em
	&-small
		width: 1em
		height: 1em
	&-default
		width: 1.15em
		height: 1.15em
	&-medium
		width: 1.25em
		height: 1.25em
	&-big
		width: 1.5em
		height: 1.5em
	&-large
		width: 1.75em
		height: 1.75em
