$boxWidth=1200px;
$themeColor=#e94840;
$yaHei="Microsoft YaHei";
$borderColor=#eaeaea;
$wrapperColor=#f8f8f8;

html
    width 100%
    height 100%
    body
        width 100%
        height 100%
        #wrap
            width 100%
            >header
                .top_line1_box
                    width 100%
                    height 40px
                    line-height 40px
                    background-color: #f1f1f1
                    &.fixed_header
                        position fixed
                        top 0
                        left 0
                        z-index 100
                        opacity: 0.9;
                        animation: fixedHeader 1s ease;
                        @keyframes fixedHeader {
                            0% {
                                transform translateY(-100%)
                            }
                            100% {
                                transform translateY(0%)
                            }
                        }
                    .top_line1
                        width $boxWidth
                        height 100%
                        margin 0 auto
                        font-size 16px
                        font-weight 700
                        color #000
                        .line1_left
                            height 100%
                            float left
                            >img
                                display inline-block
                                font-size 14px
                                vertical-align middle
                            .switch_city
                                color #898989
                        .line1_right
                            float right
                            >li
                                float left
                                >a
                                    padding 10px 15px
                                &.active>a
                                    color $themeColor
            #content
                width 100%
                overflow-x hidden
                .service_outer
                    width 100%
                    font-size 14px
                    background-color $wrapperColor
                    .service_box
                        position relative
                        width $boxWidth
                        margin 0 auto
                        .ad
                            position absolute
                            top 85px
                            right 0
                            .ad_img1,
                            .ad_box
                                width 230px
                                height 290px
                                margin-bottom 10px
                                cursor pointer
                                background: url("http://127.0.0.1:3000/img/tuijianfuwushang_06.jpg") no-repeat center;
                                .ad_img2
                                    width 130px
                                    height 130px
                                    transform translate(40%, 40%)
                        .service_title
                            width 100%
                            height 85px
                            line-height 85px
                            font-size 18px
                            font-weight 700
                            color #333
                        .service_lines
                            width 100%
                            .line4service
                                width 100%
                                .service_cards
                                    width 100%
                                    >li
                                        float left
                                        width 232px
                                        height 300px
                                        overflow hidden
                                        box-sizing border-box
                                        padding 10px
                                        margin 0 10px 10px 0
                                        background-color: #fff
                                        cursor pointer
                                        >a
                                            >img
                                                width 210px
                                                height 210px
                                            >p
                                                height 26px
                                                margin-top 15px
                                                line-height 26px
                                            >div
                                                height 26px
                                                line-height 26px
                                                font-size 12px
                                                color #929292
                                                .order_count
                                                    float left
                                                .comment_count
                                                    float right
                    .more_box
                        transform translateX(-50%)
                        width 200px
                        height 50px
                        margin 50px auto
                        border 1px solid #e5e5e5
                        border-radius 5px
                        line-height 50px
                        text-align center
                        font-size: 16px;
                        color: #b1b1b1;
                        cursor: pointer;
                        background-color: #fff
                .service_pos_box
                    width 100%
                    background-color #fff
                    .service_pos
                        width $boxWidth
                        margin 0 auto
                        padding-top 60px
                        .we_promise
                            >h2
                                font-size 30px
                                text-align center
                                font-family $yaHei
                                font-weight 800
                                margin 20px 0 10px
                                >span
                                    color $themeColor
                            >p
                                font-size 22px
                                color #3d3838
                                text-align center
                        .service_promise
                            position relative
                            width 100%
                            padding-top 20px
                            height 66px
                            font-family "微软雅黑"
                            >ul
                                position absolute
                                left 50%
                                transform translateX(-50%)
                                >li
                                    float left
                                    color #1d1515
                                    font-size 18px
                                    >img
                                        float left
                                    >span
                                        float left
                                        margin 0 30px 0 10px
                .footer_box
                    width 100%
                    background-color $wrapperColor
                    .footer
                        width $boxWidth
                        margin 0 auto
                        padding-top 30px
                        .company
                            margin-bottom 20px
                            font-family $yaHei
                            font-size 18px
                            font-weight 700
                            color #1d1515
                        .company_ul
                            font-size 16px
                            >li
                                float left
                                width 120px
                                height 60px
                                margin-left 15px
                                margin-bottom 20px
                                &:first-child,
                                &:nth-child(10)
                                    margin-left 0
                                >img
                                    width 100%
                                    height 100%
                        .copyright
                            clear both
                            font-size 16px
                            text-align center
                            padding-bottom 30px
