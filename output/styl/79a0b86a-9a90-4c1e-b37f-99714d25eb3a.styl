@import 'fonts.css'
*
    margin 0
    padding 0
    font-family 'Abhaya Libre'
    box-sizing border-box
body
    font-size 16px
    background #000000
.wrapper
    min-width 100vw
    min-height 100vh
    background url('../img/climpek.png'), linear-gradient(to bottom right, #1e3c72, #2a5298)
    text-align center
    color #ffffff
    &_game
        padding 100px 80px  50px
        display flex
        justify-content center
        align-content center
        flex-wrap wrap
        display none
        .card
            margin 14px
            width 100px
            height 140px
            border-radius 4px
            position relative
            transform-style preserve-3d
            .card_shirt
                position absolute
                top 0
                bottom 0
                right 0
                left 0
                transform-origin center
                transform rotateY(0deg)
                transition all ease .9s
                z-index 8
                border 6px solid #fff
                backface-visibility hidden
            .card_main
                border 6px solid #fff
                border-radius 4px
                position absolute
                top 0
                right 0
                bottom 0
                left 0
                width 100px
                height 140px
                transform-origin center
                transition all ease .9s
                transform rotateY(-180deg)
                z-index 1
                backface-visibility hidden
            &.rotate
                .card_shirt
                    transform rotateY(180deg)
                    z-index 1
                .card_main
                    transform rotateY(0deg)
                    z-index 8
            &.remove
                -webkit-animation opacityToggle .5s
                animation opacityToggle .5s
    &_after_game
        display none
