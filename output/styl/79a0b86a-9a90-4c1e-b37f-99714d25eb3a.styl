.container
    max-width 1000px
    margin 0 auto
    padding 50px 0
.greeting
    padding 5% 10px
.greeting_title
    font-size 65px
    font-weight 800
    color #08a740
    margin-bottom 20px
.title
  text-transform capitalize
  font-size 48px
  font-weight 800
  color #1cd32a
  letter-spacing 2px
  margin 20px 0 30px
.subtitle
  font-size 40px
  margin 20px 0 30px
  letter-spacing 1px
  color #1cd32a
  &__big
    font-size 48px
    font-weight 800
.main_list
  margin 20px 0 25px 15px
  padding 10px 0 0 10px
  li
    margin-bottom 7px
    text-align left
    font-size 22px
.text
  text-align left
  font-size 22px
  margin 10px 0
.profile_form
    padding 50px
    border 1px solid rgba(250,250,250,.3)
    border-radius 2px
.fieldset
    border none
    text-align left
    margin-bottom 20px
    &__center
        text-align center
label
    display inline-block
    width 200px
    font-size 26px
input[type='text'],
input[type='email']
    width calc(100% - 237px)
    display inline-block
    background transparent
    border 1px solid rgba(250,250,250,.3)
    color #ffffff
    height 50px
    font-size 26px
    padding 5px 15px
.card_shirt
    width 100px
    height 140px
    background #cccccc
    border-radius 5px
.card_shirt_1
    background red url('../img/princess.svg') center no-repeat
    background-size contain
.card_shirt_2
    background blue url('../img/car.svg') center no-repeat
    background-size contain
.choose_shirt
    input[type='radio']
        display none
        & +  label
            width 100px
            margin 0 15px
            border 2px solid transparent
            transition all ease .3s
        &:checked + label
            border 2px solid #19ce59
.choose_number
    input[type='radio']
        display none
        & +  label
            margin 0 20px
            font-size 20px
            width 60px
            font-size 28px
            &:before
                content ''
                width 10px
                height 10px
                display inline-block
                background transparent
                border 3px solid #2e5290
                box-shadow 0 0 0 1px #fff
                border-radius 50%
                vertical-align midle
                margin-right 8px
                transition all ease .3s
        &:checked + label:before
            background #ffffff
.btn
    font-size 34px
    padding 8px 50px
    background transparent
    border 2px solid #ffffff
    border-radius 4px
    margin 20px 0
    color #ffffff
    transition all ease .3s
    &:hover
    &:focus
        background #ffffff
        color #1cd32a
.timer
    position absolute
    top 20px
    right 20px
    font-size 40px
    font-weight 800
    color rgb(188, 190, 193)
    letter-spacing 2px
    display none
.score_table
    margin 20px auto
    line-height 1.5
    font-size 32px
    tr
        padding 10px 0
        border-bottom 1px solid #ccc
@-webkit-keyframes opacityToggle
  0%
    opacity 1
  100%
    opacity 0

@keyframes opacityToggle
  0%
    opacity 1
  100%
    opacity 0