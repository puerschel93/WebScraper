.flex
  display flex
  justify-content space-between
  position relative
  +below(res-mobile)
    display block
    *[class^="col"]
      width 100% !important
      padding 0 !important
  .col
    width 50%
  .col-right /* it's more to the right... */
    width 40%
  .col-3
    width calc(100% / 3)
    padding 0 30px
  .col-custom-2
    width 40%
    padding 0 30px
  .col-custom-1
    width 20%
    padding 0 30px

/**
 * bg slants and images
 */

.area-bg
  position absolute
  top 0
  bottom -1px
  left 0
  right 0
  z-index -1
  backface-visibility hidden

.bg-slanted
  @extend .area-bg
  transform skewY(3deg)
  overflow hidden

.bg-image
  @extend .area-bg
  &:before
    content ''
    background-repeat no-repeat
    background-position center center
    background-size cover
    will-change opacity
    position absolute
    top -50px
    bottom -50px
    left 0
    right 0
    z-index -1
    transform translateZ(0)
  &.bg-slanted:before
    transform skewY(-3deg)

.bg-dark-mask
  &.bg-image:before
    background-position top center
    background-size 100%
    // filter blur(2px)
    max-height 700px
    opacity 0.6
    +below(res-mobile)
      background-size cover
  &:after
