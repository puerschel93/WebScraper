.hidden
    &.active ~ .dashboard-container
        display none
.dashboard-container
    .next-round-container
        display none
    .hide-dashboard
        display initial

.dashboard-container
    .header-container
        padding 10px
        max-height 50px
        .logo-contianer
            display inline-flex
            max-height 30px
            align-items center
            .logo
                display inline-block
                padding 0 10px
                .image
                    height 30px
            .logo-text
                display inline-block
                padding-top 5px
                padding-left 25px
                font-weight 500
                font-size 1.125rem
        .user-info
            display inline-block
            float right
            padding-top 5px
            .year-info,.team-info
                padding 0 10px
        .options
            text-align center
            position relative
            display inline-block
            padding 0 15px
            float right
            padding-top 5px
            .hamburger-sign
                color #6D747E
                font-size 1.5rem
                display inline-block
                padding 0 10px
                cursor pointer
            .menu
                position absolute
                background-color #FFF
                font-size 0.875rem
                z-index 3
                right 0
                text-align left
                border 1px solid #3e3e3e
                -webkit-transform scaleY(0)
                transform scaleY(0)
                -webkit-transform-origin 0 0
                transform-origin 100% 0
                transition all 0.5s cubic-bezier(.5,0,.3,1)
                &.show-menu
                    -webkit-transform scaleY(1)
                    transform scaleY(1)
                & > .menu-link
                    display block
                    padding 5px 10px
                    cursor pointer
                    color #6D747E
                    line-height 20px
                    &:nth-child(even)
                        background-color #ECF0F1
                    &:hover
                        background-color #7B8C9D
                        color #FFF
    .dashboard-data-wrapper
        width 100%
        align-items flex-end
        &.hideMetrics
            .metrics-wrapper,.graphs-container
                display none
        .metrics-wrapper
            height 50px
            align-items center
        .navbar-wrapper
            background #D80365 /* For browsers that do not support gradients */    
            background -webkit-linear-gradient(left, #FF4A00 , #D80365) /* For Safari 5.1 to 6.0 */
            background -o-linear-gradient(right, #FF4A00, #D80365) /* For Opera 11.1 to 12.0 */
            background -moz-linear-gradient(right, #FF4A00, #D80365) /* For Firefox 3.6 to 15 */
            background linear-gradient(to right, #FF4A00 , #D80365) /* Standard syntax (must be last) */
            // @media screen and (max-width 768px)
            //     background #D80365 /* For browsers that do not support gradients */    
            //     background -webkit-linear-gradient(#FF4A00 , #D80365) /* For Safari 5.1 to 6.0 */
            //     background -o-linear-gradient(#FF4A00, #D80365) /* For Opera 11.1 to 12.0 */
            //     background -moz-linear-gradient(#FF4A00, #D80365) /* For Firefox 3.6 to 15 */
            //     background linear-gradient(#FF4A00 , #D80365) /* Standard syntax (must be last) */
        .graphs-container
            background #D80365
            @media screen and (max-width 768px)
                background #D80365 /* For browsers that do not support gradients */    
                background -webkit-linear-gradient(left, #FF4A00 , #D80365) /* For Safari 5.1 to 6.0 */
                background -o-linear-gradient(right, #FF4A00, #D80365) /* For Opera 11.1 to 12.0 */
                background -moz-linear-gradient(right, #FF4A00, #D80365) /* For Firefox 3.6 to 15 */
                background linear-gradient(to right, #FF4A00 , #D80365) /* Standard syntax (must be last) */
.footer-container
    position fixed
    width 100%
    bottom 0
    z-index 2
.submit-btn-container
    position fixed
    top 50%
    right 0
    z-index 1
    .submit-btn
        padding 15px
        color #fff
        text-transform uppercase
        text-align center
        font-weight 500
        cursor pointer
        background #D30000 /* For browsers that do not support gradients */
        background -webkit-linear-gradient(#D30000, #D80365) /* For Safari 5.1 to 6.0 */
        background -o-linear-gradient(#D30000, #D80365) /* For Opera 11.1 to 12.0 */
        background -moz-linear-gradient(#D30000, #D80365) /* For Firefox 3.6 to 15 */
        background linear-gradient(#D30000, #D80365) /* Standard syntax (must be last) */
        border-top-left-radius 15px
        border-bottom-left-radius 15px
        box-shadow 0px 7px 20px 0px rgba(0,0,0,.2)
        transition box-shadow .3s ease-out
        &:hover
            background #D80365
            box-shadow 0px 10px 20px 0px rgba(0,0,0,.3)

.error-modal,.export-modal,.reset-modal
    &.modal
        .modal-dialog
            margin auto
            position absolute
            left 50%
            top 50%
            -webkit-transform translate(-50%, -50%)
            -moz-transform translate(-50%, -50%)
            -ms-transform translate(-50%, -50%)
            transform translate(-50%, -50%)
        &.show .modal-dialog
            position absolute
            left 50%
            top 50%
            -webkit-transform translate(-50%, -50%)
            -moz-transform translate(-50%, -50%)
            -ms-transform translate(-50%, -50%)
            transform translate(-50%, -50%)
    .modal-content
        border 0
        margin-left 15px
        margin-right 15px
    .modal-header
        padding 7px 15px
        background-color #504848
        color #FFF
        font-size 1.25rem
        font-weight 500
        calc-outlet
            color #FFF
            font-size 1.25rem
            font-weight 500
    .button-container
        padding 0 15px 10px
        justify-content center
        .btn
            cursor pointer
            margin-left 15px
            calc-outlet
                color #fff

.submit-modal,.password-modal,.logout-modal
    .modal-dialog
        margin auto
        position absolute
        left 50%
        top 50%
        -webkit-transform translate(-50%, -50%)
        -moz-transform translate(-50%, -50%)
        -ms-transform translate(-50%, -50%)
        transform translate(-50%, -50%)
        text-align center
        width 555px
        .modal-content
            background #f2f2f2
            height 250px
            border-radius 15px
            .modal-header
                background none
                justify-content center
                .modal-title
                    color #D80365
                    text-transform uppercase
                    .digital-ico 
                        margin-right .3em
            .modal-body
                .confirmBody
                    margin 0 20px
                    color #A8ADB4
            .password-container
                margin-top 10px
                .password-text
                    padding-bottom 5px
                input
                    width 100%
                    border 1px solid #000
                    &:active,&:focus
                        border 1px solid #000
                        outline-color #D80365
            .error-message
                font-weight 500
                color #F00
            .button-container
                display flex
                width 100%
                position absolute
                bottom 0
                padding 0
                margin 0
                .btn 
                    flex 1
                    height 60px
                    border none
                    cursor pointer
                    .digital-ico 
                        margin-left .3em
                .btn-danger
                    border none
                    border-bottom-right-radius 15px
                    background #D30000 /* For browsers that do not support gradients */
                    background -webkit-linear-gradient(#D30000, #D80365) /* For Safari 5.1 to 6.0 */
                    background -o-linear-gradient(#D30000, #D80365) /* For Opera 11.1 to 12.0 */
                    background -moz-linear-gradient(#D30000, #D80365) /* For Firefox 3.6 to 15 */
                    background linear-gradient(#D30000, #D80365) /* Standard syntax (must be last) */
                    transition none
                    &.disabled
                        pointer-events none
                    &:hover
                        background #D80365
                .btn-primary
                    background #A8ADB4
                    border none
                    border-bottom-left-radius 15px
                    transition none
                    &:hover
                        background #6D747E

