.suites
	background-image: url('./img/leaf1.png');
	background-repeat: no-repeat;

	&-container
		padding-bottom 4rem
		padding-left 2.5rem
		padding-right 2.5rem
	&-text
		padding-top 6rem
		h2
			margin-bottom 1rem 
		h3
			font-size 1.5rem
	&-cate
		width 100%
		&-item
			padding-left: .25rem;
			padding-top: .25rem;
			display: flex;
			-webkit-box-orient: vertical;
			-webkit-box-direction: normal;
			-webkit-flex-direction: column;
			-ms-flex-direction: column;
			flex-direction: column;
			width: 100%//33.333%;
			min-height: 341px;
			&-link 
				width: 100%;
				display: flex;
				padding: 1.5rem;//padding: 3rem;
				text-align: center;
				overflow: hidden;
				position: relative;
				flex-grow: 2;
				color white
				&:after
					content: '';
					background: rgba(0,0,0,.2);
					position: absolute;
					top: 0;
					left: 0;
					bottom: 0;
					right: 0;
				&.height-half
					.suites-cate-item-border
						padding: .75rem 1.5rem 1rem;
					.suites-cate-item-content
						transform: translateY(25%) !important;
					.suites-cate-item-description
						display none
				&:hover
					.suites-cate-item-bg
						-webkit-filter: blur(10px);
						filter: blur(10px);
						transform: scale(1.1);
					.suites-cate-item-border
						&-right
						&-left
							&:before
							&:after
								opacity: 1;
								transform: scale(1);
					.suites-cate-item-content
						transform: translateY(0) //!important;
					.suites-cate-item-description
						opacity: 1;
						transform: translateY(0);
						transition: .35s ease;
			&-bg 
				position: absolute;
				left: -15px;
				top: -15px;
				right: -15px;
				bottom: -15px;
				-webkit-transition: .35s;
				transition: .35s;
				background: no-repeat 50% 50%;
				background-size: cover;
			&-border
				position: relative;
				width: 100%;
				padding: 1rem 1.5rem;//padding: 2rem;
				z-index: 3;
				display: flex;
				align-items: center;
				justify-content: center;
			
				
@media screen and (min-width: 768px)
	.suites
		&-cate
			&-item
				width: 33.333%;
				&.large
					width: 66.666%;
				&-border
					overflow: hidden;
					position: relative;
					&-left 
					&-right 
						position: absolute;
						left: 0;
						top: 0;
						right: 0;
						bottom: 0;
						&:after
						&:before
							content: '';
							position: absolute;
							background: #fff;
							opacity: .2;
							transition: .35s;
					&-left
					&-right
						&:before
							width: 2px;
							top: 0;
							bottom: 0;
							transform: scaleY(0);
						&:after
							height: 2px;
							left: 0;
							right: 0;
							transform: scaleX(0);
					&-left 
						&:before
							left: 0;
							transform-origin: 50% 100%;
						&:after
							bottom: 0;
							transform-origin: 0 50
					&-right
						&:before
							right: 0;
							transform-origin: 50% 0;
						&:after
							top: 0;
							transform-origin: 100% 50%;
					
							
				&-content 
					transition: .35s;
					transform: translateY(25%);
				&-title 
					margin-bottom: 1rem;
					line-height: 1;
					font-weight 400
					font-size 1.5rem
					color white
				&-description
					opacity: 0;
					transform: translateY(10px);
					transition: .35s ease-in;
@media screen and (min-width: 1220px)
