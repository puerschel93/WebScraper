.login-page
	&__container
		width: 552px
		height: 555px
		border-radius: 8px
		box-shadow: 0 0 40px 0 rgba(111, 108, 105, .18)
		background-color: #fff
		margin: 122px auto
		padding: 60px 122px

	&__bottom
		width: 100%
		max-width: 630px
		text-align: center
		color: #646464
		margin: 0 auto 32px
		position: relative
		p
			opacity: .5

		&-icons
			display: flex
			justify-content: center
		&-icon
			width: 83px
			height: 83px
		&-service
			display: flex
			align-items: center
			position: absolute
			right: 58px
			top: -100px
			color: #646464
			i
				color: #ff9022
				margin-right: 8px
			a
				color: #ff8113

	.account-freeze
		color: #ff8113
		margin-top: 10px
		text-align: center

		&:hover
			cursor: pointer
		i
			margin-right: 4px

	.login-logo
		text-align: center
		margin: 0 auto 24px

		&__logo
			width: 50px
			height: 50px
			margin: 0 auto
		&__title
			color: #6f6f6f
			font-size: 16px
			text-align: center
			margin-top: 22px
			margin-bottom: 18px

	.ljit-form
		.ant-form-item
			margin-bottom: 32px
			&:last-child
				margin-bottom: 12px
		svg
			&,
			g
				fill: rgba(0, 0, 0, .25)

		input,
		button,
		.ljit-form-button-row,
		.ljit-form-button-row .ljit-form-col
			width: 100%

		.ljit-form-button-row .ljit-form-col
			margin-left: 0

		.ljit-form-label .ant-form-explain
			font-size: 14px
			color: #e23f3d
			margin-top: 0

		button[type="submit"]
			background-color: #ff8113
			border-color: #ff8113
			margin-left: 0
			font-size: 16px
			font-weight: 600

	.ljit-icon--middle,
	.ljit-icon--middle > svg
		width: 16px
		height: 16px

	.has-error
		.ant-input-affix-wrapper .ant-input
			background-color: #fff1f0

	.ant-input-suffix__svg
		height: 32px
		display: inline-block
		position: relative
		right: -10px

		svg
			width: 100px
			height: 100%

			&:hover
				cursor: pointer
.client-login
	&__tabs
		.ant-tabs-nav .ant-tabs-tab .anticon
			width: 20px
			margin-right: 2px
	&__tab-google
		.account-freeze
			margin-top: 0
	&__greeting
		color: #6f6f6f
		font-size: 20px
		font-weight: 500
	&--bottom
		text-align: right
		color: #646464
		a
			color: #ec722d
	&__btn-reset-password
		color: #c0c0c0
		font-size: 16px
		font-weight: 600

	.ant-tabs-tab
		width: 86px
		padding: 12px 0 8px
		margin: 0
		font-size: 16px
		> span i
			position: relative
			top: -1px
		+ .ant-tabs-tab
			margin-left: 24px
		.wechat-icon-wrap svg
			width: 17px
			height: 17px

	.card-inkbar-tabs.ljit-tabs > .ant-tabs-bar > .ant-tabs-nav-container > .ant-tabs-nav-wrap > .ant-tabs-nav-scroll > .ant-tabs-nav > div
		> .ant-tabs-tab
			font-weight: normal

		> .ant-tabs-tab:not(.ant-tabs-tab-active):hover svg > g
			fill: #ff8113
			-webkit-transition: fill 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)
			transition: fill 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)

		> .ant-tabs-tab-active svg > g
			fill: #ff8113

	.ant-tabs-tab-arrow-show
		display: none

	.ant-tabs-nav-container-scrolling
		padding: 0

	.ljit-form
		padding-top: 43px

	.ljit-button--hollow
		&:focus,
		&:hover,
		&:active
			border-color: inherit
			color: #c0c0c0
			border-color: #d9d9d9

	&--password
		&__switch-user
			&
				color: #ec722d
			span
				cursor: pointer

			.ljit-icon--middle,
			.ljit-icon--middle > svg
				margin-right: 5px
				width: 14px
				height: 14px

		.client-login__logo
			margin-bottom: 72px

		.ljit-form
			padding-top: 32px

			.ant-form-item:last-child
				margin-bottom: 3px

		.ant-form-item:nth-child(2)
			margin-bottom: 32px

	&__message-modal
		top: 25%

.geo-validation-modal
	&__content
		padding: 15px 42px 22px 42px
		> p
			padding: 0px 16px
			color: red
			text-align: center
			margin-bottom: 33px
	&__login-info
		padding: 9px 24px
		background-color: #f9f9f9
		margin-bottom: 32px
	.ljit-label-text__label
		font-weight: 500
	.ljit-form
		padding: 0 24px
	.ant-form-item
		display: flex
		margin-bottom: 8px
		.ant-form-item-label
			> label
				color: #d8d8d8
		&:last-child
			.ant-col
				flex: 1

.client-account-freeze
	& + .login-page__bottom .login-page__bottom-service
		display: none

	.ljit-form .ant-form-item:last-child
		margin-bottom: 0

	.account-freeze
		text-align: left
		margin-top: 3px

		i
			color: #fe5d00
			margin-right: 8px

classNames = 'original-password' 'new-password' 'confirm-password'

set-form-item(className)
	.{className}
		margin-bottom: 10px
		.ant-form-item-label
			line-height: 20.9999px
			> label
				color: #9f9f9f
				&.ant-form-item-required::before
					content: ''

.first-time-login-modify-password-modal
	& .ant-form
		margin: 17px 80px 36px 56px
		for className in classNames
			set-form-item(className)
