@media screen and (min-width:960px) and (max-width:1259px) {
	
	/* header */

	header {
		font-size: 1.25em;

		nav {
			margin-left: 40px;

			& > ul > li {
				margin-right: 20px;
				padding-right: 21px;
				background-position: right 43px;

				&.show {
					background-position: right 42px;
				}
			}

			.phone {
				margin-right: 12px;
				padding-right: 15px;
			}

			.login {
				padding-right: 42px;

				&, &.show {
					background-position: 62px 35px;
				}
			}

			.user {
				padding-right: 68px;

				ul {
					left: -14px;

					li a {
						padding-left: 15px;
					}
				}
			}
		}

		.order {
			padding-right: 30px;
			padding-left: 30px;
		}
	}
