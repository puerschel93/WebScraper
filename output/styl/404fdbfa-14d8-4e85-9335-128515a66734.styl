*
*:before
*:after
  box-sizing border-box

html
body
  height 100%
  margin 0
  padding 0

body
  color #34495e
  font-family  -apple-system-font,BlinkMacSystemFont,"Helvetica Neue","PingFang SC","Hiragino Sans GB","Microsoft YaHei UI","Microsoft YaHei",Arial,sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  overflow-y scroll

.loading
  font-size 10vh
  font-weight 600
  text-align center
  margin 0
  padding-top 44vh

h1
h2
h3
h4
h5
h6
strong
  font-weight 600
  color #2c3e50

pre
code
  font-size .8em
  background #eef7f2
  border-radius 3px
  -webkit-font-smoothing initial
  -moz-osx-font-smoothing initial

code
  color #e96900
  padding 3px 5px
  margin 0 2px
  white-space nowrap

pre
pre > code
  white-space pre

em
  color #a4cab6

p
  word-spacing .05em

q:before
  content "\201c"

q:after
  content "\201d"

blockquote
  margin 0
  padding 1px 15px
  color #777
  background #eef7f2
  border-left 4px solid #a4cab6

blockquote > :first-child
  margin-top .5em

blockquote > :last-child
  margin-bottom .3em

abbr
acronym
  border-bottom 1px dotted
  cursor help

table
  border-collapse collapse
  border-spacing 0
  display block
  width 100%
  overflow auto
  word-break keep-all

table th
  font-weight 600
  background #eef7f2

table th
table td
  padding 6px 13px
  border 1px solid #a4cab6

table tr
  background #eef7f2
  border-top 1px solid #a4cab6

table tr:nth-child(2n)
  background #eef7f2

kbd
  background #eef7f2
  border-radius 3px
  border 1px solid #a4cab6
  box-shadow 0 1px 0 rgba(0, 0, 0, .2), inset 0 0 0 2px #eef7f2
  color #000
  text-shadow 0 1px 0 #eef7f2
  padding .1em .5em
  margin 0 .1em
  font-family Menlo, Consolas, Monaco, 'Courier New', monospace
  font-size .75em
  line-height 1.2
  display inline-block
  white-space nowrap
  position relative
  top -2px

del
  text-decoration line-through

ins
  text-decoration none
  background #ffb

img
video
  border none

hr
  margin: 40px 0
  border: 0
  height: 1px
  background-image: linear-gradient(to right, rgba(0, 0, 0, 0), #207f4c, rgba(0, 0, 0, 0))

a
  text-decoration none
  color #207f4c
  cursor pointer
  font-weight 600

a:hover
  text-decoration underline

a.button
  display inline-block
  background #207f4c
  border 1px solid #207f4c
  color #eef7f2
  font-size .9em
  text-align center
  vertical-align middle
  min-width 160px
  margin .5em
  padding .625em 1.25em
  transition all .15s ease

  &:hover
    background #3c9566
    border-color #3c9566
    text-decoration none

.fade-enter-active
.fade-leave-active
  transition opacity .3s ease

.fade-enter
.fade-leave-active
  opacity 0
