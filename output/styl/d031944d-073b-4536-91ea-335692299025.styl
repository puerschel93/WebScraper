/**
 * Icon Font (potentially getting replaced)
*/

.icon
  color dark-gray
  font-family 'icomoon'
  font-style normal
  font-variant normal
  font-weight normal
  line-height 1
  speak none
  text-transform none
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  &:before
    display inline-block
  // icon classes
  &.security:before
    content '\e600'
  &.science:before
    content '\e601'
  &.mag:before
    content '\e603'
  &.gear:before
    content '\e604'
  &.entertainment:before
    content '\e605'
  &.design:before
    content '\e606'
  &.business:before
    content '\e607'

.card
  .icon
    border-radius 50%
    display inline-block
    font-size 36px
    vertical-align bottom
    text-align center
    width 40px
    &.security
      background security
      color white
    &.science
      background science
    &.magazine
      background black
    &.gear
      background gear
    &.entertainment
      background entertainment
    &.design
      background design
    &.business
      background biz
    &.gear,
    &.business,
    &.entertainment
      color dark-gray

