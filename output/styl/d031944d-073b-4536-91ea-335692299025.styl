.ui
  background-image url('../images/ui/sprite/ui-dist-sprite-std.png')
  background-image url('../images/ui/sprite/ui-dist-sprite.svg')
  background-position-y 0
  background-size auto 90px
  display inline-block
  height 30px
  width 30px
  #sharing &
    display block
    float left
    margin 5px 13px 13px 0
  &.ui-fb
    background-position-x -630px
    &:hover
      background-position-x -540px
  &.ui-twit
    background-position-x -90px
    &:hover
      background-position-x -900px
  &.ui-pint
    background-position-x -1350px
    &:hover
      background-position-x -1260px
  &.ui-mail
    background-position-x -1080px
    &:hover
      background-position-x -990px
  &.ui-comments
    background-position-x -450px
    &:hover
      background-position-x -360px
  &.ui-arrow
    background-position-x 0
    &.left
      transform rotate(180deg)
  &.ui-boxes
    background-position-x -493px
    opacity .5
  &.ui-close
    background-position-x -180px
  &.ui-info
    background-position-x -720px
  &.ui-logo
    background-position-x -1478px
    background-position-y 10px
    height 50px
    width 133px
  &.ui-more
    background-position-x -1170px
  &.ui-search
    background-position-x -880px
  &.ui-search,
  &.ui-boxes
    background-size auto 55px
    height 20px
    width 20px

.ui-gallery-arrow
  absolute top 50%
  background white
  cursor pointer
  height 60px
  margin-top -55px
  opacity .75
  padding 13px
  width 60px
  &:before
    absolute top 15px left 15px
    background-image url('../images/ui/sprite/ui-dist-sprite-std.png')
    background-image url('../images/ui/sprite/ui-dist-sprite.svg')
    background-position-x 0
    background-position-y 0
    background-size auto 90px
    content ''
    height 30px
    width 30px
  &:hover
    opacity 1
  &.left
    transform rotate(180deg)
    &:before
      background-position-x 3px
  &.right
    right 0




