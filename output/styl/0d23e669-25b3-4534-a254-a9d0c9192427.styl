.tableOfContents
    background $color-imaginary-background
    .headline
        display flex
        align-items center
        justify-content space-evenly
        .handDown
            width 8vw
            height 8vw
            margin-right 80px
            background url('/assets/images/general/mousePointer.svg') no-repeat center
            background-size contain
            transform rotate(180deg) rotateY(180deg)
    .linksGallery
        padding 160px
        display flex
        flex-wrap wrap
        .themeLink
            $w = 12vw
            position relative
            display flex
            flex-direction column
            align-items center
            text-align center
            margin 40px
            &:hover::before
                opacity 0
            &::before
            &::after
                content ''
                display block
                position absolute
                width 100%
                left 0
                right 0
            &::before
                pointer-events none
                background $color-imaginary-background
                height 100%
                z-index 100
                mix-blend-mode color
                will-change opacity
                transition opacity .3s $bezier-fun
            &::after
                height ($w * 4/3 * 1/2)
                border-radius 0 0 ($w / 2) ($w / 2)
                top ($w * 4/3 * 1/2)
                background linear-gradient(to top, rgba($color-imaginary-background, 1) 0%, rgba($color-imaginary-background, 0) 100%)
            .previewImage
                width $w
                height ($w * 4/3)
                border-radius ($w / 2)
                object-fit cover
            .previewIcon
                $iw = 40px
                position absolute
                top 'calc(%s - %s)' % ($w * 4/3 $iw / 2)
                left 'calc(50% - (%s))' % ($iw / 2)
                height $iw
                width $iw
            .themeName
                margin-top 24px
                letter-spacing 4px
                text-transform uppercase