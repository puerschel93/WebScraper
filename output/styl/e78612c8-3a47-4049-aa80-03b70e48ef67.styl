.page-home
  .home-branch-info
    color $lapis-blue
    padding 20px 20px 0
    background-color $white
    border-radius 10px
    margin-top 20px

    .blocks-title
      display flex
      align-items center
      color $main-font
      font-weight 600

      img
        width 22px
        height 22px
        margin-right 5px

      span
        &:last-child
          color #808080
          float right
          font-size 12px

    .branch-info-title
      font-size 16px
      padding-bottom 20px
      border-bottom 1px solid $lighter-grey

    > .ant-form
      > .ant-row
        border-bottom 1px solid $lighter-grey

        > .ant-col.ant-col-8
          width 36%
          .fork-name
            .ant-col-8.ant-form-item-label, .ant-col-12.ant-form-item-label
              width 30%
            .ant-col-16.ant-form-item-control-wrapper, .ant-col-12.ant-form-item-control-wrapper
              width 70%

        > .ant-col.ant-col-16
          width 64%

        > div
          .full-width
            .ant-col:first-of-type
              width 15%
            .ant-col:last-of-type
              width 85%

          .ant-form-item
            margin-bottom 0

            &.blue-font
              .ant-form-item-control
                span
                  color $blue2
                  cursor pointer

                .holders
                  cursor pointer
                  img
                    margin-left 19px

            .halve-cycle-text-decoration
              cursor pointer
              border-bottom 1px dashed $simple-grey

            &:last-of-type
              border-bottom 0

            .ant-form-item-label
              padding 5px 0
              text-align left
              line-height 40px
              width 50%

              label
                color $lapis-blue
                font-weight bold
                color $main-font

            .ant-col-16
              width 50%

            .ant-form-item-control-wrapper
              .ant-form-item-control
                padding 5px 0
                color $darkest-grey
                text-align right
                line-height 40px

                > span
                  word-break break-all
                  white-space normal
                  display block
                  max-width 100%
                  // text-align right

      .ant-col:last-of-type
        .ant-form-item
          padding-left 80px

      .ant-col.nopadding
        .ant-form-item
          padding-left 0

.halve-cycle-tooltip
  .ant-tooltip-inner
    text-align center

@media screen and (max-width: 1200px)
  .page-home
    .home-branch-info
      padding 0
      border-radius 4px
      margin-top 16px

      .ant-form
        > .ant-row
          padding 0 12px
          border-bottom 0
          > div
            width 100% !important
            .ant-form-item
              font-size 13px

              &.blue-font
                .ant-form-item-control
                  .holders
                    text-align right

                    img
                      margin-left 4px


              .ant-form-item-label
                line-height normal
                padding 12px 0 6px

                label
                  font-size 13px
                  font-weight 500

              .ant-form-item-control-wrapper
                .ant-form-item-control
                  line-height normal
                  padding 12px 0 6px

              &.blue-font
                .ant-form-item-control-wrapper
                  .ant-form-item-control
                    > span
                      word-break break-all
                      white-space normal
                      text-align left
                      line-height normal

                  &.ant-col-16
                     .ant-form-item-control
                      > span
                        text-align left

            .full-width
              .ant-col.ant-form-item-label, .ant-col.ant-form-item-control-wrapper
                width 100%

              label
                font-size 13px

            &:last-of-type
              .ant-form-item
                padding-left 0


