// Load variables
@import '../assets/definitions.styl'

// Styles shared by all fields

.vf-field
	// Make room for .vf-error-message
	margin-bottom 40px

// Validation error message
.vf-error-message
	color form-color-error
	font-size 0.85em
	// Don't shift the layout
	height 0px
	padding-top 6px
	margin-bottom -6px

// Tooltip message (similar to error message)
.vf-tooltip-message
	color form-color-base
	font-size 0.85em
	// Don't shift the layout
	height 0px
	padding-top 6px
	margin-bottom -6px

// Tooltip
tooltip-size = 23px
.vf-tooltip-btn
	position absolute
	right 12px
	top 50%
	transform translateY(-48%)
	width form-tooltip-btn-w
	height form-tooltip-btn-w
	color form-bkg-base
	font-weight bold
	font-size 14px
	opacity 0.6
	&.active
		opacity 0.8
	&:hover
		opacity 1

.vf-tooltip-icon
	position relative

.vf-tooltip-bkg
	expand()
	height 95%
	background form-color-base
	border-radius form-tooltip-btn-w

// Transition for error message and tooltip message
.vf-slide-enter-active, .vf-slide-leave-active
	transition transform form-base-speed ease-out-quad, opacity (form-base-speed/1.25)
.vf-slide-enter-to, .vf-slide-leave // In state
	opacity 1
.vf-slide-enter, .vf-slide-leave-to // Out state
	opacity 0
	transform translateY(-8px)


//////////////////////////////////////////////////////////////////
// Radio

radio-style()
	size = 16px
	innerSize = 10px
	display inline-flex
	align-items center
	cursor pointer
	margin-right spacing-s
	margin-bottom spacing-s

	&.boxed
		border 1px solid ui-grey
		border-radius input-box-radius
		width 100%

	.radio
		circle(size)
		border 1px solid ui-grey
		position relative
		flex-center()
		margin-right spacing-xs
		flex-shrink 0

	.radio:after
		content ''
		display block
		width innerSize
		height innerSize
		border-radius 50%
		background color-primary
		transition opacity (base-speed/2) ease-out
		opacity 0

	input[type=radio]
		display none

	input:checked ~ .radio:after
		opacity 1
