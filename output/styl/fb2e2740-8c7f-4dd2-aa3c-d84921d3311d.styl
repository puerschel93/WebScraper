.rt-button
  display inline-block
  height 52px
  box-sizing border-box
  font-size 16px
  text-align center
  text-transform none
  border-radius 4px
  margin 0
  padding-left 28px
  padding-right 28px
  cursor pointer
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property background-color, border, text-shadow, color, opacity

  .ripple
    padding-left 28px
    padding-right 28px

  &[disabled]
    cursor default
  .rt-n-banner &
    @media (max-width tablet-upper-limit)
      height 36px
      font-size 14px
      .ripple
        padding 0 20px !important

.rt-button + .rt-button
  margin-left horizontal-space

.rt-button-vertical
    display table
    & + &
      margin-top vertical-space
      margin-left 0

.rt-button--is-fitched
  color transparent !important

.rt-button--is-block
  display block
  min-width 100%

.rt-button-td--is-block
  @media (max-width tablet-upper-limit)
    display block
    min-width 100%

.rt-button-md--is-block
  @media (max-width mobile-upper-limit)
    display block
    min-width 100%

.ripple-wave
  background-color default-wive-color

.rt-button-with-ripple
  overflow hidden
  padding-left 0
  padding-right 0

.rt-button-small
  height 36px
  font-size 14px

  .ripple
    padding 0 20px !important

.rt-button-td-small
  @media (max-width tablet-upper-limit)
    height 36px
    font-size 14px
    .ripple
      padding 0 20px

.rt-button-md-small
  @media (max-width mobile-upper-limit)
    height 36px
    font-size 14px
    .ripple
      padding 0 20px

  &:before
    display none
    opacity 0

.rt-button-orange
  color #fff
  background-color b2c-orange

  &:hover
    @media (hover hover)
      background-color b2c-orange-button-hover
  &:focus
    background-color b2c-orange-button-hover
  &:active
    background-color b2c-orange-button-active

  &[disabled]
    color main-color05
    background-color main-color005

    .rt-dark-theme &,
    &.rt-button-bright
      color b2c-white05
      background-color b2c-white005

  .ripple-wave
    background-color b2c-white

.rt-button-gray
  background-color transparent
  border 2px solid main-color003-no-opacity
  color main-color
  .rt-dark-theme &,
  &.rt-button-bright
    color b2c-white
  &:hover
    @media (hover hover)
      background-color main-color005

      .rt-dark-theme &,
      &.rt-button-bright
        background-color hsl(rgba(b2c-white, .05))
  &:focus
    background-color main-color005
    .rt-dark-theme &,
    &.rt-button-bright
      background-color hsl(rgba(b2c-white, .05))

  &:active
    background-color main-color01

    .rt-dark-theme &,
    &.rt-button-bright
      background-color hsl(rgba(b2c-white, .1))

  &[disabled]
    color main-color05
    border-color hsl(rgba(main-color, .1))

    &:hover
      @media (hover hover)
        background-color transparent
    &:focus
      background-color transparent

    .rt-dark-theme &,
    &.rt-button-bright
      color b2c-white05
      background-color transparent
      border-color b2c-white01

      &:hover
        @media (hover hover)
          background-color transparent
      &:focus
        background-color transparent

  .ripple-wave
    background-color main-color05

    .rt-dark-theme &,
    &.rt-button-bright
      background-color hsl(rgba(b2c-white, .5))

