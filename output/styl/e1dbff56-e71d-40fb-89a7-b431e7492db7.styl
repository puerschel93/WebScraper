/* 로딩패널 */
.common-loading-panel{
    position : absolute;
    width : 100%;
    height : 100%;
    top : 0;
    left : 0;
    z-index : 100;
    background-color: rgba(255, 255, 255, 0.98)
}
.common-loading-panel-container {
  position: relative;
  top: calc(50% - 81px);
  z-index: 2;
  text-align: center;
}
.common-loading-panel-inner {
  display: inline-block;
  /* background-color: rgba(0, 0, 0, 0.7); */
  padding: 16px 36px;
}
.image-only .common-loading-panel-inner {
  background-color: inherit;
}
.common-loading-panel-text {
  margin-top 47px;
  font-size: 18px;
  font-weight: normal;
  text-align: center;
}
.common-loading-panel-image,
.dropdown-panel .common-loading-panel-image-only {
  display: inline-block;
  background-image: url('~assets/images/loading.gif');
  width: 40px;
  height: 40px;
  background-color: transparent;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;

  /* -webkit-animation: spin 1s linear infinite;
  animation: spin 1s linear infinite; */
}

// map-tooltip-overlay
.map-tooltip-overlay {
  width: 100%;
  padding: 6px 9px;
  height: auto;
  min-height: 58px;
  border-radius: 2px;
  border: solid 1px #f8f8fb;
  box-shadow: 2px 2px 4px 0 rgba(117, 117, 135, 0.5);
  background-color: #f8f8fb;
  &:after {
    content: '';
    position: absolute;
    border-top: 10px solid #f8f8fb;
    border-right: 5px solid transparent;
    border-left: 5px solid transparent;
    bottom: -9px;
    left: calc(50% - 5px);
  }
  .tooltip-overlay-price {
    line-height: 26px;
    font-size: 14px;
    font-weight: 300;
    color: #080f31;
  }
  .tooltip-overlay-category {
    line-height: 26px;
    font-size: 11px;
    font-weight: 300;
    text-align: right;
    padding-left: 20px;
  }
  .tooltip-overlay-title {
    line-height: 17px;
    font-size: 11px;
    font-weight: 300;
  }
};

.map-overlay {
  display: inline-block;
  margin-left: -30%;
  position: relative;
  cursor: pointer;
  border-radius: 6px;
  box-shadow: 2px 2px 4px 0 #757587;
  background-color: #f8f8fb;
  > {
    .count {
      display: inline-block;
      min-width: 50px;
      height: 50px;
      color: #080f31;
      font-size: 20px;
      font-weight: 500;
      line-height: 50px;
      text-align: center;
      white-space: nowrap;
      border-radius: 6px;
      background-color: #fff;
      position: relative;
      z-index: 1;
    }
    .title {
      display: inline-block;
      min-width: 90px;
      color: #080f31;
      font-size: 20px;
      font-weight: 300;
      height: 50px;
      line-height: 50px;
      white-space: nowrap;
      pointer-events: none;
      position: relative;
      padding: 0px 15px 0px 15px;
    }
  }
}

// modal
.root-layout-wrapper
  // 모바일
  &.mobile
    .sweet-modal-overlay
      height 100%
    .sweet-modal.is-mobile-fullscreen
      height 100%
    .sweet-modal.theme-light
      overflow initial
      // width 385px
      .sweet-title
        padding-top 12px
        height 60px
        line-height 48px
        padding-left 15px
        > h2
          font-size 16px
      .sweet-content
        padding 0px 15px
        // height calc(100% - 60px)
        height calc(100% - 120px)
        overflow auto
        .sweet-content-content
          height 100%
          .wrapper
            height 100%
      .sweet-buttons
        height 60px
        padding 0px
        border-radius: 4px
        background-color: #080f31
        font-size: 16px
        font-weight: normal
        line-height: 60px
        color #ffffff
      .footer-btn-box
        height 60px
        .button
          font-size 16px
          font-weight normal
    .sweet-box-actions
      right 4px
      z-index 1
