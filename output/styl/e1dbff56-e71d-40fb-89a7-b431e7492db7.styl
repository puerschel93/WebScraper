    border-top: solid 4px #545151
    overflow hidden
    .sweet-title
      border none
      text-align left
      > h2
        opacity: 0.9
        font-size: 20px
        font-weight: 500
        color: #162348
    .sweet-content
      padding 0px 90px 0px 90px
    .sweet-buttons
      height 71px
      padding 0px
      border-radius: 4px
      background-color: #080f31
      font-size: 20px
      font-weight: 500
