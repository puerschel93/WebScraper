main_blue=rgb(0,111,219) // From Lois and Mary Anne

link_button_base()
  padding 0.2em 1em
  border 2px solid main_blue
  border-radius 6px
  margin-bottom 0.5em
  color main_blue;
  cursor: pointer;


*
  box-sizing: border-box
  font-family: 'EB Garamond', Garamond, 'Times New Roman', serif

body
  font-size 18px

.link-button
  display block
  link_button_base()
  text-decoration: none
  &:visited
    color main_blue
  &.book
    font-style: italic;
    font-weight 600
  &:hover
    background-color lighten(main_blue, 90%)
  &:global(.active)
    background-color lighten(main_blue, 40%)
    color white

a
  color #ff0053

a:visited
  color darken(#ff0053,10%)
  // #0b5c9f

p,ul,ol
  line-height 1.5
  //font-size 20px
  margin 0.5em 0 0.75em

h2
  color main_blue

h3,h4,h5,h6
  color main_blue

strong, b
  color main_blue

:global(span.lead-in)
  color main_blue
  font-weight 600

:global(.highlight)
  color #ff0053
  font-weight 600
  font-style italic

img
  max-width 100%

ol,ul
  display block
  padding-left: 1.5em

:global
  .cover-image, .rear-jacket-image
    img
      width 100%

    p.caption
      font-size 0.9em
      margin 0
      color #888
      font-style italic

  .gift-message
    text-align: center

  .cover-image img
    border 2px solid #aaa
    border-radius 6px
    width 100%

  .side-content
    max-width 35%
    margin 1em auto 2em

  .holiday-message
    border: 3px solid lighten(#ff0053, 90%)
    border-radius 6px
    padding 0.5em 1em
    transition: visibility 0.5s, height 0.5s linear
    text-align left
    .message-body
      align-items center
      .image-container
        width 10em
        margin 0 auto
      img
        width 100%
        margin-left 1.5em
      p
        flex 1
        font-style italic
        font-size 1.5em
        color #ff0053
        margin-top 0
        margin-bottom 0
    .message-controls
      display flex
      flex-direction row
      justify-content flex-end

  .purchase-request-form
    display block
    .numCopies>div
      display flex
      flex-direction row
      label
        flex-grow 1
        min-width: 150px
  .contact-form
    line-height: 1
    .family-connection
      margin 1em 0
    :global(.large)
      label
        font-size 1em
        font-style italic

:global
  h2.book-title
    text-transform: uppercase
    margin-bottom 0
    margin-top 10px
    font-size 2em
  h3.book-subtitle
    margin-top 0
    font-style italic
    font-size 1.2em


header
  margin-bottom 1em
  a
    text-decoration none
  h1.site-title
    font-size 3em
    color main_blue
    margin-bottom 0px
    margin-top 3px
  nav ul
    list-style-type none
    padding-left 0
    margin-bottom -0.5em
    margin-right -1em
    margin-top 0.6em
    a.link-button
      margin-right 1em
  .left
    height 9em
    margin-top -0.5em
    text-align center
    img
      transform rotate(90deg)
      height 9em

footer
  margin-top 2em
  color #666
  p
    font-size 14px
    line-height: 1.2

.wrap
  padding: 0 1em

div.wrap
  display flex
  flex-direction column
  min-height 100vh

.books-overview
  display flex
  flex-direction row
  margin 0 -1em
  .book
    margin 0 1em
    .link-button
      display inline-block
      margin 0 auto

:global(.giftCard)
  margin 0 1em
  color #888
  font-size 0.9em
  margin-top 3em
  max-width 18em
  font-style italic

@media screen and (min-width: 600px)
  :global
    .side-content
      margin-right 2em
      margin-left 0
      min-width 300px
      width 35%
      display: block
    .purchase-request-form
      position relative
      width 100%
      form
        width 100%
      input
        max-width 100%

  div.main
    flex-grow 1
    display flex
    flex-direction row
    position relative
    &>:last-child
      flex-grow 1
      
  footer
    :global(.right)
      flex-grow 1
    display flex
    flex-direction row
    margin-right -2em
    justify-content: space-between
    &>div
      max-width 30em
      margin-right 2em

  header
    display flex
    flex-direction: row
    .left
      width 10em
      margin-right 2em
      margin-left -0.7em
    nav ul
      display flex
      flex-direction row
      padding-left 0

  .wrap
    width 100vw
    max-width: 52em
    margin: 1em auto
    padding: 0 1em

:global(.errorPage)
  margin 0 auto
  font-size:24px
  h1
    display:inline-block
    border-right:1px solid rgba(0, 0, 0,.3)
    margin:0
    margin-right:20px
    padding:10px 23px 10px 0
    font-weight:500
    vertical-align:middle
  &>div
    display:inline-block
    text-align:left
    vertical-align:middle
  h2
    font-size:20px
    font-weight:normal;
    margin:0;
    padding:0
    width 200px

div.index-content
  display block
  dt
    display block
    clear both
    margin-top 1em
    font-weight: bold
  dd
    break-inside: avoid
  .names
    column-count: 2

div.index-header
  display flex
  flex-flow row wrap
  align-items: baseline
  h3
    margin-right 1em
  &>div
    flex-grow 1

@media screen and  (min-width: 52em)
  div.index-content .names
    column-count: 4