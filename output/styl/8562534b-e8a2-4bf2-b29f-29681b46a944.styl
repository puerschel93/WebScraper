@import "nib"
@import "normalize.styl"
@import "icons.styl"


naranja = #e8941c//#ffb730//#ffe600
gris = #4D4D4D
cafe = #4e382c
celeste = #084461 //#009cb3
verde = #5ea19d


*
	box-sizing border-box

body
	font-family 'Arial', sans-serif
	font-size 80%
	line-height 30px
	color #888
	position relative
	


ul
	margin 0
	padding 0
	
	

a
	text-decoration none
	transition all .5s ease

h1
h2
h3
h4
h5
	margin-top 0
	font-weight 400
h1
	line-height 45px

img
	max-width 100%
	height auto
.ul__arrow
	list-style none
	
	li 
		&:before
			font-family: 'coaching';
			content '\f138'
			margin-right 1rem
			color naranja
.right
	right 0
.left
	left 0
.txt-center
	text-align center
	
.no-padding
	padding-left 0 !important
	padding-right 0 !important
	
.overflow
	overflow hidden
		
.transparent
	background-color transparent

.btn
.wpcf7-submit	
	padding .5rem .8rem
	border-radius 6px
	display inline-block
	color #000
	transition all .5s ease
	border 1px solid amarillo
	box-shadow 0 1px 1px rgba(0, 0, 0, .75)
	font-weight 700
	text-transform uppercase
	&:hover
		background-color white
		border-color #d6d6d6
		box-shadow 0 1px 1px gris
		color gris
.btn-yellow
	background-color amarillo
	border-color amarillo
	color #000
.btn-red
	background-color red
	border-color red
	color #FFF
.btn-orange
.wpcf7-submit	
	background-color naranja
	border-color naranja
	color #FFF
	&:hover
		background-color celeste
		border-color celeste
		color white	

.flex-container-sb
	display flex
	flex-wrap wrap
	justify-content space-between
	
.flex-container-sa
	display flex
	flex-wrap wrap
	justify-content space-around

