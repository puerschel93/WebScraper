.postEffects {
  box-shadow: 0 1px 2px var(--shadow-2);
  background-color: var(--surface-background);
  border-radius: 8px;
  margin-bottom: 20px;
}

#main {
  display: flex;
  justify-content: center;
  min-height: calc(100vh - 396px);
}

#profilePhoto {
  display: flex;
  width: 908px;
  margin-top: 16px;
  padding: 0 16px;

  &>div {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    padding: 16px;

    &>div:first-of-type {
      display: flex;
      align-items: center;
      justify-content: space-between;

      &>span {
        font-size: 20px;
        font-weight: bold;
      }

      &>label>div {
        height: 36px;
        padding: 0 12px;
        display: flex;
        align-items: center;
        border-radius: 6px;
        position: relative;
        cursor: pointer;

        &>span {
          font-size: 15px;
          font-weight: bold;
          color: var(--accent);
        }

        &>div {
          position: absolute;
          width: 100%;
          height: 100%;
          top: 0;
          left: 0;
          border-radius: 6px;
          background-color: var(--hover-overlay);
          opacity: 0;

          &:hover {
            opacity: 1;
          }
        }
      }
    }

    &>div:nth-of-type(2) {
      width: 100%;
      display: flex;
      flex-wrap: wrap;

      &>div {
        width: 20%;
        padding: 4px;

        &>div {
          padding-top: 100%;
          position: relative;
          
          &>img {
            position: absolute;
            top: 0;
            border-radius: 8px;
            border: 1px solid var(--media-inner-border);
            width: 100%;
            height: 100%;
            object-fit: cover;
          }

          &>div {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            position: absolute;
            top: 8px;
            right: 8px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            background-color: var(--always-dark-overlay);

            &>i {
              display: inline-block;
              background-image: url(/images/profile/photo/KkfHv1-IknJ.png);
              background-position: 0 -494px;
              filter: var(--filter-always-white);
              height: 16px;
              width: 16px;
            }

            &>div:first-of-type {
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              border-radius: 50%;
              background-color: var(--hover-overlay);
              opacity: 0;

              &:hover {
                opacity: 1;
              }
            }
          }
        }
      }
    }
  }
}

.photoOptTab {
  position: absolute;
  top: 0;
  left: 0;

  &>.photoOptList {
    position: absolute;
    top: 0;
    left: 0;
    width: 344px;
    box-shadow: 0 12px 28px 0 var(--shadow-2),0 2px 4px 0 var(--shadow-1);
    border-radius: 8px;
    background-color: white;
    padding: 8px;
    // z-index: 1;

    &>div {
      height: 36px;
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 8px;
      border-radius: 4px;
      cursor: pointer;

      i {
        display: inline-block;
        height: 20px;
        width: 20px;
      }

      span {
        font-size: 15px;
        font-weight: 500;
      }

      &:hover {
        background-color: var(--hover-overlay);
      }
    }

    &>.downloadBtn>a {
      flex: 1 1 0;
      display: flex;
      gap: 12px;
      
      &>i {
        background-image: url(/images/profile/photo/olZaBEu0ogf.png);
        background-position: 0 0;
      }
    }

    &>.setProfilePhotoBtn {
      &>i {
        background-image: url(/images/profile/photo/Unhg7KUHLnj.png);
        background-position: 0 -1040px;
      }
    }

    &>.removePhotoBtn {
      &>i {
        background-image: url(/images/profile/photo/5uKTYgLMVNw.png);
        background-position: 0 -466px;
      }
    }
  }
  
  .triangle {
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 0;
    border: 6px solid;
    border-color: white  white  transparent  transparent;
    // z-index: 1;
  }
}
