.popup
  position fixed
  width 100%
  height 100%
  background-color rgba(0,0,0,0.8)
  top 0
  left 0
  opacity 0
  visibility hidden
  transition all .8s ease 0s

.popup.open
  opacity 1
  visibility visible

.popup.open .popup__content
  transform perspective(0px) translate(0px,0px) rotateX(0deg)
  opacity 1

.popup__body
  min-height 100%
  display flex
  align-items center
  justify-content center
  padding 30px 10px

.popup__content
  background-color whitesmoke
  color black
  max-width 800px
  padding 30px
  position: relative
  transition all .8s ease 0s
  opacity 0
  border 10px
  box-shadow:5px 4px 0px 1px hsl(215deg 71% 70%), -10px -5px 1px 0px hsl(0deg 65% 61%);
  transform perspective(600px) translate(0px,-100%) rotateX(45deg)

.popup__close
  position absolute
  right 10px
  top 10px
  font-size 20px
  text-decoration none
  color black

