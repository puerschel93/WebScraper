  background: linear-gradient(45deg , #a75f4d,#2980b9);
  border 2px solid transparent

button:focus, button:hover
  background transparent
  cursor pointer
  outline none
  border 2px solid #8d5757
  color #555555

a:visited
  color #cfc2c2

.shadow::after{
  filter: blur(20px);
}
@keyframes animate{
  0%{
    background-position: -300% 0;
  }
  100%{
    background-position: 300% 0;
  }
}

