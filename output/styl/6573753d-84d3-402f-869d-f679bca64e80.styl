.header-full
    z-index: 99
    position: sticky
    top: 0
    background: #252525 
    height: 110px 

    @media(max-width: 992px)
        height: 70px 
.menu
    display: flex
    justify-content: center
    background: #252525
    flex-wrap: nowrap
    align-items: center

    li
        width: 30%
        position: relative

        &:hover
            ul.sub-menu
                opacity: 1
                visibility: visible
        a
            color: #fff
            text-transform: uppercase
            font-size: 13px
            font-weight: 500
            transition: all 150ms ease-in-out 

            &:hover
                color: #4bd7c8
                text-decoration: none

li#menu-item-16 a 
    color: #4bd7c8
    font-weight: 600

.menu__menu
    img 
        margin-right: 10px
    a 
        color: #cccccc
        font-weight: 700
        font-size: 12px
        display: flex
        align-items: center
        justify-content: center

        &:hover
            text-decoration: none

.menu__logo
    display: flex
    flex-wrap: wrap
    max-width: 215px
    width: 100%
    justify-content: space-between
    align-items: center

