    .side-right
        margin-top: 50px

    .conteudo-post
        flex: 0 0 100%
        margin: 0 auto

    .side-right
        flex: 0 0 95%

    .footer-left
        flex-wrap wrap
        text-align center
        margin-top: 50px

        ul
            width 100%

    .footer-right
        flex-wrap wrap
        text-align center

        ul
            width 100%

    input.search-submit
        right: 50px!important

    body.post-template-default.single.single-post  .left
        padding 10px

    .logo a img
        transform: scale(0.8)

@media (max-width: 350px)
    .facebook
        display none

.side-menu-wrapper {
    overflow: hidden 
    background: #232323 
    padding: 20px
    position: fixed 
    top: 0 
    left: -300px 
    height: 100% 
    z-index: 2 
    transition: 0.5s 
    width: 300px 
    font: 20px 
    z-index: 999999999999
}
.side-menu-wrapper > ul 
    padding:0 
    margin:0 
    overflow-y: auto  

.side-menu-wrapper > ul > li > a {
    display: block 
    padding: 6px 4px 6px 4px 
    color: #ffffff 
    -webkit-transition: 0.3s 
    transition: 0.3s 
    text-decoration: none 
    width: 45% 
    text-transform: uppercase  }

.side-menu-wrapper > ul > li > a:hover {
    color : rgba(208,187,0,0.63)  }

.side-menu-wrapper > a.menu-close {
    color: #232323;
    display: block;
    margin: -31px -15px -10px -21px;
    font-size: 48px;
    text-decoration: none;
    text-align: right;
}

.side-menu-overlay {
    height: 100% 
    width: 0 
    position: fixed 
    z-index: 1 
    top: 0 
    left: 0 
    background-color: rgba(0,0,0,.7) 
    overflow-y: auto 
    overflow-x: hidden 
    text-align: center 
    opacity: 0 
    transition: opacity 1s 
}
header#masthead {
    position: fixed 
    z-index: 9999 
    width: 100%  }

@media(max-width:992px)
    ul#menu-menu_site-1 li a
        display: block 
        padding: 6px 4px 6px 4px 
        color: #fff 
        -webkit-transition: 0.3s 
        transition: 0.3s 
        text-decoration: none 
        width: 45% 
        text-transform: uppercase 
        border-bottom: 1px solid 

        &:hover
            color: #f0c823


input#s 
    border: 1px solid #4bd7c8
    border-radius: 3px
    height: 45px
    font-size: 13px
    padding-left: 10px
    color: #424040
    font-weight: 500
    
input#searchsubmit 
    position: absolute 
    width: 10px 
    right: 0 
    top: 47px 
    background: #fff 
    border: none 
    background: url(../../img/lupa.png) 
    background-repeat: no-repeat 
    background-size: 70%
        

.itens--form
    position: relative
    position: relative 
    height: 110px 
    display: flex 
    align-items: center 

.dark
    &:before 
        content: ''
        display: block
        z-index: 8
        background: #000000de
        width: 100%
        height: 100vh
        left: 50%
        position: absolute
        transform: translate(-50%)

.closeb 
    position: absolute
    right: -25px
    top: -10px
    font-size: 20px
    font-weight: 700
    color: red
    cursor: pointer

.menu_color 
    color: #ccc!important
    font-weight: 700
    cursor: pointer

.menu__left
    display: none
    width: 45vh
    position: absolute
    z-index: 99
    background: #fff
    left: -100vh
    top: 0
    height: 100vh
    padding: 100px 0px
    transition: all 150ms ease-in-out

    @media(max-width: 992px)
        padding: 100px 10px

    &:before
        content: '' 
        width: 100vh 
        background: #fff 
        display: block 
        position: absolute 
        height: 100vh 
        left: -400px 
        top: 0 
        z-index: 1 

        @media(max-width: 992px)
            width: 61vh

     .item1, .item5
        margin: 0!important



.menu__ativo
    display: block
    left: 0
    transition: all 150ms ease-in-out
    z-index: 9999

ul.sub-menu 
    position: absolute
    margin: 0
    background: #fff
    top: 100%
    padding: 20px
    border-radius: 3px
    min-width: 270px
    left: 50%
    transform: translateX(-50%)
    opacity 0
    visibility hidden
    box-shadow: 2.121px 2.121px 14px 0px rgba(0,0,0,0.08)

    @media(max-width: 991px)
        background: transparent
        position relative
        left: 0
        transform: none
        opacity: 1
        visibility: visible
        min-width: 0
        box-shadow: none

    li
        width: 100%

        a
            color: #252525
            margin: 6px 0
            font-size: 13px
