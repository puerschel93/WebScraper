border-1px($color)
    position: relative
    &:after
      content: ' '
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      border-bottom:1px solid $color

@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5),(-webkit-min-device-pixel-ratio: 1),(min-device-pixel-ratio: 1)
    .border-1px
        &::after
            -webkit-transform:scaleY(0.7)
            transform:scaleY(0.7)
    
                
@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
    .border-1px
        &::after
            -webkit-transform:scaleY(0.5)
            transform:scaleY(0.5)
