@import "../_theme.styl";

/* #################### 上一页按钮 #################### */
#article-nav-previous 
    text-decoration: none;
    color: black;
    float: left;
    position: relative;
    transition: all .35s;
    padding: 15px 15px 15px 30px;
    font-weight: bold;  
    &:after
        position: absolute;
        content: "";
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        z-index: 0;
        background: btn-color;
        transition: all .35s;
    span 
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.35s;
        font-size: 16px;
        z-index: 1;
        &:before
            content: '\00ab';
            position: absolute;
            z-index: 1;
            opacity: 1;
            top: 0;
            left: -15px;    
    &:hover
        span 
            color: btn-highlight-color;
        &:after
            width: 100%;

/* #################### 下一页按钮 #################### */
#article-nav-next
    text-decoration: none;
    color: black;
    float: right;
    position: relative;
    transition: all .35s;
    padding: 15px 30px 15px 15px;
    font-weight: bold;  
    &.read-more 
        padding: 5px 15px;
        font-size: 12px;
        color: btn-color;
        span
            font-size: 14px;
            &:after
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -15px;
                transition: 0.15s;
        &:before
            position: absolute;
            content: "";
            top: 0;
            right: 0;
            width: 4px;
            height: 100%;
            z-index: 0;
            background: btn-color;
            transition: all .35s;
        &:hover
            span
               color: btn-highlight-color; 
               padding-right: 15px;
               &:after
                    opacity: 1;
                    right: 0;
                    top: 0;
    &:before 
        position: absolute;
        content: "";
        top: 0;
        right: 0;
        width: 4px;
        height: 100%;
        z-index: 0;
        background: btn-color;
        transition: all .35s;
    &:hover
        &:before
            width: 100%;
        span 
            color: btn-highlight-color;
            &:after
                opacity: 1;
                right: 0;
                top: 0;
                right: -15px;
    span
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.35s;
        font-size: 16px;
        &:after 
            content: '\00bb';
            position: absolute;
            opacity: 1;
            top: 0;
            right: -15px;

/* #################### hover显示上下border的button #################### */
.vertical-border-btn
    color: #FFF;
    transition: all 0.3s;
    position: relative;
    span
        transition: letter-spacing 0.3s;
    &:before 
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        opacity: 0;
        transition: all 0.3s;
        border-top-width: 2px;
        border-bottom-width: 2px;
        border-top-style: solid;
        border-bottom-style: solid;
        border-top-color: white;
        border-bottom-color: white;
        transform: scale(0.1, 1);
    &:after
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        transition: all 0.3s;
    &.active, &:hover
        span 
            letter-spacing: 2px;
        &:before
            opacity: 1; 
            transform: scale(1, 1); 
        &:after
            opacity: 0; 
            transform: scale(0.1, 1);


.scrolled .vertical-border-btn::before
    border-top-color: sticky-banner-highlight-color;
    border-bottom-color: sticky-banner-highlight-color;



