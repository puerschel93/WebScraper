/*!-----------------------------------------------------------------
  .arrow - модуль стрелка
 -----------------------------------------------------------------*/
.arrow
	&:after
		border: solid black
		border-width: 0 2px 2px 0
		padding: 4px
		content: ''
		display: inline-block
		margin-left: 5px
	&.is-right
		&:after
			transform: rotate(-45deg)
			margin-left: 1px
	&.is-left
		&:after
			transform: rotate(135deg)
	&.is-up
		&:after
			transform: rotate(-135deg)
	&.is-down
		&:after
			transform: rotate(45deg)