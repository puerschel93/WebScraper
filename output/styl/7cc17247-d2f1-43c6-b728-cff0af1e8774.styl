#blocker
  background #1ca1f3
  height: 117px;
  position: absolute;
  z-index: 1000;
  top: 0;
  width: 100%;

#game
  overflow hidden
  padding-top 50px
  position relative


#event
  background linear-gradient(#fff, #ececed)
  color #333
  border-radius 8px
  padding 15px
  box-shadow 0 0 5px rgba(0,0,0,0.3)
  z-index 1000
  position relative
  width 470px
  margin-bottom 12px
  .e
    padding 0 0px 0 70px
    background-repeat no-repeat
    background-size contain
  transform translateY(-60px)
  opacity 0
  transition 0.4s ease-out
  &.on
    opacity 1
    transform translateY(0)
  &.gmail
    .e
      background-image url(/images/gmail.png)
  &.slack
    .e
      padding-left 50px
      background-image url(/images/slack.png)
  &.zoom
    .e
      padding-left 50px
      background-image url(/images/zoom.png)
  strong
    font-size 13px
  p
    margin 0
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    font-size 13px
