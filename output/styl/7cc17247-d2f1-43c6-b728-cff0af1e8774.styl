      border 1px solid #f7a1df
      border-radius 2px
    &.r0, &.r2
      .c1 .i
        border-bottom 0 none
        border-radius 2px 2px 0 0
      .c2 .i
        border-bottom 0 none
        border-radius 2px 2px 0 0
      .c3 .i
        border-top 0 none
        border-radius: 0 0 2px 2px
      .c4 .i
        border-top 0 none
