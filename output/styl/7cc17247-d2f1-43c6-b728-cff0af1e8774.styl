@import 'nib';

*, *:before, *:after
  box-sizing border-box

body
  padding: 50px
  font: 14px "Open Sans", Helvetica, Arial, sans-serif
  background #1ca1f3
a
  color: #00B7FF

#pg-index
  p
    color #888

#calendar-outside
  background #fff
  width 470px
  height 560px
  padding 40px 40px 20px 80px
  border-radius 10px
  position relative
  .times
    position absolute
    left 0
    text-align right
    width 80px
    border-right 1px solid #eeeeee
    padding-right 7px
    font-size 11px
    color #bbb
    .t
      height 50px

#calendar
  position relative
  top -150px
  padding-top 150px
  .d
    width 50px
    border-right 1px solid #eee
    height 500px
    float left
    span
      display block
      text-align center
      font-size 11px
      color #BBB
      pointer-events none
      position relative
      top -20px

.cube
  position absolute
  top 0
  left 0
  transition 0.2s ease-out
  &.shape-L
    width 100px
    height 100px
    .c1
      position absolute
      width 50px
      height 50px
      top 0
      left 0
      transition 0.2s ease-out
      padding 2px 2px 0 2px
    .c2
      position absolute
      width 50px
      height 50px
      top 50px
      left 50px
      transition 0.2s ease-out
      padding 2px
    .c3
      position absolute
      width 50px
      height 50px
      top 50px
      left 0
      transition 0.2s ease-out
      padding 0 2px 2px 2px
    .c4
      display none
    .i
      background #e0f7d6
      width 100%
      height 100%
      border 1px solid #90e27b
      border-radius 2px
      padding 0 2px
    &.r0, &.r2
      .c1 .i
        border-bottom 0 none
        border-radius 2px 2px 0 0
      .c3 .i
        border-top 0 none
        border-radius 0 0 2px 2px
    &.r1, &.r3
      .c1
        padding 2px
      .c2
        padding 2px 2px 2px 0
      .c3
        padding 2px 0 2px 2px
      .c2 .i
        border-left 0 none
        border-radius 0 2px 2px 0
      .c3 .i
        border-right 0 none
        border-radius 2px 0 0 2px
  &.shape-I
    width 150px
    height 150px
    transform-origin 50% 50%
    .c1
      position absolute
      width 50px
      height 50px
      top 50px
      left 0px
      transition 0.2s ease-out
      padding 2px
    .c2
      position absolute
      width 50px
      height 50px
      top 50px
      left 50px
      transition 0.2s ease-out
      padding 2px
    .c3
      position absolute
      width 50px
      height 50px
      top 50px
      left 100px
      transition 0.2s ease-out
      padding 2px
    .c4
      display none
    .i
      background #ffe7ce
      width 100%
      height 100%
      border 1px solid #f0bc8a
      border-radius 2px
    &.r1, &.r3
      .c1
        padding 2px 0px 2px 2px
      .c2
        padding 2px 0
      .c3
        padding 2px 2px 2px 0px
      .c1 .i
        border-right 0 none
        border-radius 2px 0 0 2px
      .c2 .i
        border-right 0 none
        border-radius 0 0
        border-left 0 none
      .c3 .i
        border-left 0 none
        border-radius 0 2px 2px 0
  &.shape-O
