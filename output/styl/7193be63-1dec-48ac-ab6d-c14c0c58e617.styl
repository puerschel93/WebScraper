.ui-button
  font-size 12px
  text-transform uppercase
  padding 12px 25px
  border 2px solid $c_primary
  display inline-flex
  color: $c_primary
  text-decoration none
  justify-content: center
  cursor pointer
  transition all .3s ease
  text-align: center;
  letter-spacing 0.1em
  background: transparent

  &:hover
    background $c_primary
    color: #fff

  &--white
    color #fff
    border-color #fff

    &:hover
      background #fff
      color: $c_primary

  &--full-green
    background-color $c_primary
    color #fff

    &:hover
      background #fff
      color: $c_primary

  &--full-red
    background-color $c_error
    border-color: $c_error
    color #fff

    &:hover
      background #fff
      color: $c_error

  &--big
    font-size 14px
    padding 17px 35px
  
.ui-button-group
  .ui-button + .ui-button
    margin-left: 10px


.ui-form
  padding: 5px 0;

  input, textarea 
    width 100%
    padding 19px 30px
    font-size 18px
    box-sizing border-box
    border none
    letter-spacing: 0.8px
  
  textarea.form-control,
  .ck.ck-content
    min-height: 7em;
    resize: none;

  .label
    font-size: 14px
    margin-bottom: 10px
    text-transform: uppercase
    font-weight: 400;
    color: #86939e;
    display: flex;
    letter-spacing: 0.075em;
    margin-right: 20px;
    
  .requied-mark
    color: #f00;
    font-size: 18px;
    padding: 0 6px;
    line-height: 14px;
    
  .form-group
    margin-top: 20px;
    margin-bottom: 20px

  input, select, textarea
    display: block;
    width: 100%;
    padding: .375rem .75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    background-color: transparent;
    background-clip: padding-box;
    border-radius: .25rem;
    transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    border: 1px solid #e3e3e3;
    box-shadow: none;
    border-radius: 3px;
    transition: all .2s ease-in-out;
    font-weight: 300;
    height: 2.5em;
  
  input
    &:disabled
      background: #f7f7f7;

  .error
    color: $c_error;
    padding: 10px 0;

.ui-link
  text-decoration none
  color: #03a9f4;
  cursor: pointer;
  font-weight: bold;

  &:hover {
    color: darken(#03a9f4, 30%)
  }

  & + .ui-link
    margin-left: 6px
  
.ui-tag
  color:#fff
  background: $c_primary
  display inline-flex
  padding: 2px 5px
  font-size: 18px
  font-family: 'Lora', sans-serif
  padding: 11px 23px

  &--white
    background-color: #eceef1;
    color: #103324;
    font-size 11px;
    letter-spacing: 0.5em;
    text-transform: uppercase

.tabs-wrap
  @media $media_sm
    padding-bottom: 30px
  .tabs-component-tabs
    padding 0
    margin 0
    display flex
    list-style-type none
    justify-content space-between
    flex-direction: column
    align-items: flex-start;

    @media $media_sm
      flex-direction: row
      margin-bottom: 25px
  
    li
      font-family: 'Lora', sans-serif;
      font-size: 12px;
      letter-spacing: 0.09em;
      color: #000000;
      margin-bottom: 15px
      padding: 10px 0
      position: relative
      transition: opacity .3s ease
      &:hover
        opacity 0.6

      &.is-active
        &:before
          content: ''
          width 100%;
          position: absolute
          bottom: 0;
          height 1px
          background: #103324;
        a
          font-weight bold
      a
        color inherit
        text-decoration none
        text-transform: uppercase


.flex
  display: flex;

.flex_col
  display: flex;
  flex-direction: column;


.text-center
  text-align: center;

