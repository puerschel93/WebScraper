    border: 1px solid #e1e8ee;
  }
}

.ui-badges {
  position: absolute;
  top: 0;
  right: 0;
  text-align: right;
  padding: 10px;
  display grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 5px;
  align-items: flex-start;

  .badge {
    background: #009688;
    padding: 2px 9px;
    color: #fff;
    line-height: 15px;
    border-radius: 5px;
    font-size: 10px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.0750em;
    text-align: center;


    &.blue {
      background: #2196f3;
    }

    &.red {
      background: $c_error;
    }

     &.acent {
      background: #db6a6a;
    }
  }
}



