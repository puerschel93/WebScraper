#links
    padding-top: 30px
    padding-bottom: 300px
    text-align left

    h1
        text-align: center

    .link
        padding 20px 90px
        h2 
            font-size 14pt
            letter-spacing: 1.5pt
            margin-bottom 5px
        a
            text-decoration: underline

    @media screen and (max-width: 700px)
        .link
            padding 0 40px

    @media screen and (max-width: 450px)
        .link
            padding 0 15px
            h2
                word-break: break-all
            a
                word-break: break-all
