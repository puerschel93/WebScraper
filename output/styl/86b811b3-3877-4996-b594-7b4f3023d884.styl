@import "vars.styl";

.content-list {
  padding-top: 5vh;
  &-section {
    padding: 7vh 15px;
    @media screen and (min-width: 480px) {
      padding: 7vh 0;
    }

    .b-indent-left {
      @media screen and (max-width: 1050px) {
        width: 100%;
        flex: 1 1 100%;
      }
    }

    &__item {
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
      margin-bottom: 30px;
      @media screen and (min-width: 768px) {
        margin-bottom: 7vh;
      }
      @media screen and (min-width: 1050px) {
        margin-bottom: 100px;
        box-shadow: none;
      }
    }

    &__title {
      font-family: $montserrat-font;
      font-weight: 600;
      font-size: 25px;
      text-align: center;

      &:first-child {
        margin-top: 20px;
        margin-bottom: 12px;
        @media screen and (min-width: 1050px) {
          margin-top: 0;
          margin-bottom: 1.3em;
        }
      }

      @media screen and (min-width: 1050px) {
        text-align: left;
      }
    }

    &__thumb {
      display: block;
      //width: 100%;
      height: 100%;
      background-repeat: no-repeat;
      background-position: center;
      -webkit-background-size: cover;
      background-size: cover;
      padding-bottom: 55%;
      @media screen and (max-width: 1050px) {
        margin-left: -15px;
        margin-right: -15px;
      }
      @media screen and (min-width: 1050px) {
        padding-bottom: 53%;
        margin-right: 6vw;
      }
    }

    &__content {
      padding: 45px 0 30px;
      @media screen and (min-width: 1050px) {
        padding: 45px 0;
      }

      h3, .h3 {
        font-family: $montserrat-font;
        font-weight: 600;
        font-size: 25px;

        &:first-child {
          margin-top: 0;
        }
      }

      .hide-content {
        display: inline-block;
        margin-top: 1.1em;
        margin-left: 15px;

        @media screen and (min-width: 992px) {
          display: none;
        }

        &.link {
          .more, .less {
            color: $blue;
            text-decoration: underline;
            transition: all 150ms ease-in;
            cursor: pointer
            &:hover {
              opacity: 0.8;
            }
          }
        }
      }

      .btn-group {
        margin-top: 25px;
        text-align: center;
        @media screen and (min-width: 1050px) {
          margin-top: 30px;
          text-align: left;
        }
      }
    }

    &__text {
      height: auto;
      margin-top: 10px;
      overflow: hidden;
      transition: height 400ms ease-in;

      @media screen and (max-width: 1050px) {
        padding-left: 15px;
        padding-right: 15px;
        &.off {
          height: 3em;
        }
      }
      @media screen and (min-width: 1050px) {
        &.off {
          height: auto;
        }
      }
    }
  }
}

.help {
  background: #f1f6fb;
  padding-bottom: 150px;

  &-box {
    padding-top: 15vh;
    //&.cn {
    //  flex-flow: row wrap;
    //}
    .t-group {
      h2 {
        margin-top: 0;
      }
    }
  }

  &-img {
    flex: 1 1 100%;
    padding-top: 53px;
  }
}


.rofits {
  background-color: $blue;
  padding: 7vh 0 12vh;
  color: #ffffff;

  &-content {
    display: flex;
    flex-direction: column;
    //align-items: center;
    margin-top: 15px;
    margin-left: 15vw;
    @media screen and (min-width: 580px) {
      flex-flow: row wrap;
      justify-content: space-around;
      align-items: flex-start;
      margin-left: 0;
    }
    @media screen and (min-width: 768px) {
      margin-top: 0;
      justify-content: space-between;
    }
  }

  &__item {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    //max-width: 190px;
    margin-bottom: 10vh;

    &:nth-child(odd) {
      margin-right: 30px;
    }
    @media screen and (min-width: 580px) {
      max-width: 190px;
    }
    @media screen and (min-width: 768px) and (max-width: 1050px) {
      max-width: 45%;
    }

    @media screen and (min-width: 992px) {
      &:nth-child(odd) {
        margin-right: auto;
      }
    }
    @media screen and (min-width: 1050px) {

      &:nth-child(even) {
        margin-left: 10vw;
      }

    }
    @media screen and (min-width: 1200px) {
      max-width: 232px;
    }
  }


  &__title {
    display: inline-block;
    max-width: 200px;
    font-family: $montserrat-font;
    font-weight: 600;
    font-size: 25px;
    padding-bottom: 6px;
    margin-bottom: 40px;
    border-bottom: 5px solid #fff;
  }

  .btn {
    justify-self: flex-end;
    align-self: flex-start;
    margin-top: 5vh;
  }
}





.ready {
  padding-top: 150px;
  padding-bottom: 170px;
  .t-group {
    max-width: 380px;
  }

  .btn-group {
    display: flex;
    padding-top: 35px;
    flex-direction: column;
    @media screen and (min-width: 580px) {
      flex-direction: row;
    }
    & > div {
      width: 100%;
      min-width: 1px;
      margin-bottom: 30px;
      @media screen and (min-width: 580px) {
        width: calc(100% / 2 - 40px);
        margin-bottom: 0;
        &:not(:first-child) {
          margin-left: 30px;
        }
      }

    }
  }
}