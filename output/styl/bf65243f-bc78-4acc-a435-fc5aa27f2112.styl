/*!-----------------------------------------------------------------
  .tab - модуль табуляция
 -----------------------------------------------------------------*/
$tabPad = 15px
.tab
	border: 1px solid #ddd
	border-radius: $tabBorderRadius = themeDefaultBorderRadius * 2
	ul.tab-links
		border-top-left-radius: $tabBorderRadius
		border-top-right-radius: $tabBorderRadius
		overflow hidden
		font-size: 18px
		margin: 0
		padding: 0
		list-style: none
		display flex
		background: #f1f1f1
		li
			padding: 10px $tabPad
			transition: 0.3s
			&:hover
				background-color: #949494
				cursor pointer
			&.is-active
				background-color: themeDefaultIsActiveBg
				color: themeDefaultIsActiveColor
	.tab-content
		transition: opacity 0.5s linear
		padding: 0
		height: 0
		overflow: hidden
		opacity: 0
		&.is-show
			padding: 0 $tabPad 5px
			opacity 1
			height: auto
