.streamHead
  margin-top: 83px
  @media (max-width: $breakpoint-sm)
    margin-top: 0
    .c
      padding: 0

  &--chat
    @media (max-width: $breakpoint-sm)
      & ^[0]__chat
        display: block;

      & ^[0]__meta
        display: none

      & ^[0]__chatHide
        display: flex;

  &__container
    display: flex;
    @media (max-width: $breakpoint-sm)
      flex-direction column

  &__main
    flex: 2;

  &__aside
    flex: 1;
    margin-left: 30px
    @media (max-width: $breakpoint-sm)
      margin-left: 0

  &__chat
    //background: #C4C4C4;
    height: 100%
    position: relative;
    @media (max-width: $breakpoint-sm)
      height: 400px
      display: none;

    iframe
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%

  &__video
    position: relative;

    &:before
      content: ''
      display: block;
      padding-bottom: 56.25%;
      background: #C4C4C4;

    iframe
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%

  &__special
    background: #EEEEEE
    padding: 15px 25px
    display: flex;
    align-items center
    @media (max-width: $breakpoint-sm)
      padding: 15px 20px;

  &__specialAction
    font-size: 18px;
    font-weight: 500
    @media (max-width: $breakpoint-sm)
      font-size: 14px

  &__specialActionLgText
    @media (max-width: $breakpoint-sm)
      display: none;

  &__specialActionSmText
    display: none;
    @media (max-width: $breakpoint-sm)
      display: block;

  &__specialInfo
    margin-left: auto;
    margin-bottom: 5px;

  &__specialTotal
    display: flex;
    align-items center
    color: $blue;

    svg
      width: 18px
      height: 18px
      margin-right: 10px;

  &__specialText
    @media (max-width: $breakpoint-sm)
      display: none;

  &__meta
    display: flex;
    align-items center
    color: #B4B4B4;
    padding: 30px 0
    @media (max-width: $breakpoint-sm)
      padding: 30px 20px

  &__metaDate
    margin-right: auto;
    @media (max-width: $breakpoint-sm)
      display: none;

  &__metaItem
    margin-left: 40px
    display: flex;
    align-items center
    @media (max-width: $breakpoint-sm)
      margin-left: 0
      margin-right: 30px

    svg
      width: 20px
      height: 20px
      margin-right: 5px

  &__metaButton
    display: flex;
    align-items: center;
    padding: 0
    background: none;

  &__metaText
    @media (max-width: $breakpoint-sm)
      display: none;

  &__dislike
    margin-left: 15px

    svg
      transform rotate(180deg)

  &__chatShow
    display: none;
    @media (max-width: $breakpoint-sm)
      display: block;
      margin-left: auto;
      border: 1px solid $blue;
      padding: 2px 15px
      font-size: 12px
      font-weight: 600
      color: $blue;
      cursor: pointer;

      svg
        width: 8px
        height: 8px
        transform rotate(-90deg)
        fill $blue

  &__chatHide
    display: none;
    @media (max-width: $breakpoint-sm)
      width: 100%
      align-items center
      justify-content center
      background: #EEEEEE;
      padding: 5px
      color: $white;
      font-size: 12px
      font-weight: 600
      cursor: pointer;

      svg
        width: 8px
        height: 8px
        transform rotate(90deg)
        fill $white
        margin-left: 5px
