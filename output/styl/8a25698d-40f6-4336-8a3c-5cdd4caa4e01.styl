* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

@import "./colors.styl";

body {
  font-family: "Titillium Web", sans-serif;
  background-color: $bg;
  color: $bg-text;
}

h1, h2, h3 {
  font-weight: 100;
}

h2 
  font-size: 4rem;
  text-align: center;
  color: $lightblue;

  margin: 2.5rem 0;

  @media screen and (min-width: 620px)
    text-align: left;
    max-width: 1200px;
    margin: 4rem auto;


p
  max-width: 60ch

img
  width: 100%;
  height: auto;

input
  appearance: none;

  font-family: "Titillium Web", sans-serif;
  border: 1px solid white;
  border-radius: 0.25rem;
  font-size: 1rem;
  background: $bg;
  color: white;
  padding: 0.25rem;

  &[type="checkbox"]
    position: relative;
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 0.25rem;

    &:checked::after
      content: "";
      display: block;
      position: absolute;
      background-color: #8AB9FF;
      border-radius: 0.125rem;

      checkOffset = 0.25rem;
      top: checkOffset;
      bottom: checkOffset;
      left: checkOffset;
      right: checkOffset;

  &[type="submit"]
    display: block;
    margin: 0 auto;

label
  font-size: 1rem;

.form-control
  display: flex;
  flex-direction: column;

  margin: 0.5rem 0;

  &.fc-row
    flex-direction: row;
    align-items: center;

    & > * + *
      margin-left: 0.5rem;

.container
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 0.5rem;

.image-display
  margin: 0 0.5rem;
  text-align: center;

  picture
    display: block;
    max-width: 100%;

  .image-bar > * + *
    margin-top: 0.5rem;

  .display-text
    margin: 1rem auto 2rem;
    font-size: 1.2rem;

  @media screen and (min-width: 600px)
    .image-bar
      display: flex;
      align-items: center;
      justify-content: space-evenly;

      & > * + *
        margin-top: 0;

    .display-text
      font-size: 1.4rem;
      margin-bottom: 4rem;

.btn
  font-family: "Titillium Web", sans-serif;
  text-transform: uppercase;
  text-decoration: none;
  padding: 0.125rem 2rem;
  color: black;
  background: linear-gradient(to right, gray, darkgray);

  border: 1px solid white;
  border-radius: 0.5rem;
  font-size: 1.25rem;
  cursor: pointer;

  &.primary
    background: linear-gradient(to right, hsl(205,56,64), 10%, hsl(205, 60, 21));
    color: white;
    &:hover, &:focus
      background: linear-gradient(to right, hsl(205,56,54), 10%, hsl(205, 60, 11));


.bg-box
  background: linear-gradient(to bottom, hsl(205,68,29), hsl(205,54, 9));
  border: 2px solid white;
  border-radius: 0.5rem;

  padding: 1rem 0.5rem;

.feature-box
  display: flex;
  flex-direction: column;
  align-items: center;

.feature-row
  @media screen and (min-width: 800px)
    flex-direction: row;
    padding-left: 1rem;
    font-size: 1.125rem;

    & > * + *
      margin-left: 2rem;

.feature-header
  font-size: 1.25rem;
  font-weight: 400;
  text-transform: uppercase;
  text-align: center;
  margin: 1.5rem 0;

  @media screen and (min-width: 800px)
    font-size: 1.5rem;

.box-header
  font-size: 1.25rem;
  font-weight: 400;
  text-transform: uppercase;
  text-align: center;
  margin: 0 0 1rem;
  

.feature-list
  list-style: none;
  text-align: center;
  & > li
    margin: 0.5rem 0;

  margin-bottom: 0.5rem;

.price
  font-size: 1.5rem;
  font-weight: 100;
  align-self: flex-end;
  padding-right: 1rem;

.double-columns
  display: grid;
  grid-template-columns: 1fr;
  row-gap: 0.5rem;

  @media screen and (min-width: 800px)
    grid-template-columns: 1fr 1fr;
    column-gap: 0.5rem;

.full-height
  @media screen and (min-width: 800px)
    display: flex;
    flex-direction: column;

    form
      flex-grow: 1;

      display: flex;
      flex-direction: column;
      justify-content: flex-end;

    input[type="submit"]
      margin-top: 8rem;

footer
  padding: 2rem 1rem 1rem;
  font-size: 0.8em;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;

  @media screen and (min-width: 800px)
    padding: 4rem 1rem 2rem;

  p
    max-width: none;

  a
    color: $lightblue;


@import "./layout/hero.styl"
@import "./layout/nav.styl"