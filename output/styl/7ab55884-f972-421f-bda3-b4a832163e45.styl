@import "nib"
/* colors */
color_red = #BE071C
rojo = #BE071C
color_plomo = #F1F1F1
verde_boton = #5DB75D
gris_oscuro = #909090
gris_claro = #ccc
gris_azulado = #E4E8F1
.subtitle
	font-size 1.5em
	border-bottom 1px solid gris_claro
	line-height 1.5em
	

#block-system-user-menu
	ul.menu
		margin-top 1em
		li
			a
			a:hover
				background url('../../../themes/bootstrap_dealcountry/images/ico-gift-white.png') no-repeat 10px 10px rojo
				border-radius 5px
				padding 1em 1em 1em 3em
				color white
			ul.dropdown-menu
				background white
				box-shadow none
				border none
				li
					background none
					width 100%
					a
						background none
						padding 1em
						color #000
						&:hover
							background none
							border-radius none
							// text-decoration underline
							color white
							width 100%


#header-menu
	background #909090
	#loginregister
		float right
		color #fff
		padding .3em

.page-giftcard-order
	.page-header
		color color_red 
		font-size 1.5em
		border-bottom none
	legend.panel-heading
		background none
		border none
		display none

	#giftcardmessage
		a
			font-weight: bold
			text-decoration none
		.alert-success
			margin-bottom 0	
	#orderalert
		overflow hidden
		img 
			float left
			margin-right 2em
	#edit-submit
		clear both
		text-shadow none
		margin 2em 1em
	label[for=edit-agree]
		font-weight: bold
	.applicabletaxes
		padding 1em
		display inline-block

	.col-sm-9
		background #fff
	.view-selected-deal 
		.masonry-item
			width 100%
			position relative
	fieldset
		width 49%
		display inline-block 
		border none
		&#edit-userdata
			.panel-body
				padding-left 0
		&#edit-shipping
			.panel-body
				padding-right 0
				
	#edit-submit
		background rojo

.page-login
	.main-container
		background #fff
		box-shadow 1px 1px 1px #222
	.formuser 
		width: 49%;
		display: inline-block;
		vertical-align: top;
		padding: 20px;
		margin-top 20px

		label
			font-weight normal
		button
			margin-top 20px
			background rojo
		h1
			display none
		h2
			font-size 18px
			color color_red
		span.description
			font-size 12px
			color #555
		.input-group-addon
			display none
		&.userregister
			border-right 1px solid #ccc 
			.form-type-password 
				input#edit-pass
					width 318px
		&.userlogin
			.hybridauth-widget-wrapper
				display none
	.page-header 
	.logo-home
		display: none;




.page-myaccount
	.page-header
		border-bottom none
	table
		th
			background color_plomo
			border 1px solid #eee
			color #555
			font-weight normal
		td
			border 1px solid #eee
			color #555
			font-weight normal
			background #fff
	table#sort-table
		tr
			th
			td 
				vertical-align middle
				text-align center
			td
				background white

.page-myaccount
.page-user
	#edit-submit
		background rojo
		text-shadow none
	.region-sidebar-first
		background #fff
		box-shadow 1px 1px 4px #444444
		padding 8px
		#block-menu-menu-my-account
		#block-menu-menu-my-accoutnt
			h2
				background color_red
				font-size 17px
				color #fff
				padding 5px
				margin 0
			.menu
				li
					a
						padding-left 2.5em
						border-bottom 1px dotted #ccc
						color #555
						background url("../../../themes/bootstrap_dealcountry/images/ico-gift-grey.png") no-repeat 10px 10px transparent
						&:hover
							background-color #E4E8F1
					&:nth-child(2)
						a
							// background-color rojo
							background-image url('../../../themes/bootstrap_dealcountry/images/ico-register.png')
					&:nth-child(3)
						a
							// background-color rojo
							background-image url('../../../themes/bootstrap_dealcountry/images/ico-car.png')
					&:nth-child(4)
						a
							// background-color rojo
							background-image url('../../../themes/bootstrap_dealcountry/images/ico-more.png')
					&:nth-child(5)
						a
							// background-color rojo
							background-image url('../../../themes/bootstrap_dealcountry/images/ico-send.png')
					&:nth-child(6)
						a
							// background-color rojo
							background-image url('../../../themes/bootstrap_dealcountry/images/ico-continue-shopping.png')
					&:nth-child(7)
						a
							// background-color rojo
							background-image url('../../../themes/bootstrap_dealcountry/images/ico-settings.png')
					&:nth-child(8)
						a
							// background-color rojo
							background-image url('../../../themes/bootstrap_dealcountry/images/ico-logout.png')



	.col-sm-9
		padding 0 
		background #fff
		box-shadow 1px 1px 4px #444444
		padding .5em 1.3em
		h1
			font-size 20px
			color color_red
			padding 0 20px 20px 0
			margin 0

	.purchase
		width 92%
		margin 0 auto 2em
		box-shadow 0 0 6px #999999
		.view-selected-deal 
			.group-info-footer 
				.footer-left
				.footer-right
					width 40%
			.masonry-item
				width auto
				box-shadow none
			.selected-deal-prices
				position relative
		.details
			background gris_azulado
			padding .5em 0
			.label
			.data
				font-size: 1em
			.label
				color rojo
				font-weight normal
			
				

