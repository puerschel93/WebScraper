$newsCardWidthDesktop = 416px
$newsCardWidthDesktop1 = 256px

.news
  display flex
  flex-direction column
  align-items center
  margin-bottom 160px
  &__title
    font-weight bold
    font-size 56px
    line-height 62px
    letter-spacing 1px
    margin-bottom 80px
  &__content
    display grid
    grid-auto-flow column
    grid-column-gap 32px
    max-width: 1312px
    overflow: auto
    padding-bottom 30px
    &::-webkit-scrollbar
      height 4px
    &::-webkit-scrollbar-track
      background $main-green
      border-radius 20px
    &::-webkit-scrollbar-thumb
      background #FFFFFF
      border-radius 20px
  &__item
    background-color #fff
    border-radius 4px
    max-width $newsCardWidthDesktop
    display flex
    flex-direction column
    &-img
      width $newsCardWidthDesktop
      height: 277px
    &-content
      padding 24px
      box-sizing border-box
      display flex
      flex-direction column
      flex-grow 2
      &-date
        font-size 16px
        line-height 16px
        color #818EA7
        letter-spacing 0.1px
        margin-bottom 16px
      &-text
        font-weight 500
        font-size 24px
        line-height 34px
        color $text-black
        margin-bottom 16px
      &-more
        font-weight 500
        font-size 16px
        line-height 30px
        color $main-green
        cursor pointer
        margin-top auto

@media screen and (max-width: $desktop1)
  .news
    margin-bottom 108px
    &__title
      font-size 40px
      line-height 62px
      margin-bottom 64px
    &__item
      max-width $newsCardWidthDesktop1
      &-img
        width $newsCardWidthDesktop1
        height: 170px
      &-content
        &-date
          font-size 14px
          line-height 16px
        &-text
          font-size 16px
          line-height 24px
        &-more
          font-size 14px
          line-height 16px

@media screen and (max-width: $desktop2)
  .news
    &__content
      padding 0 90px 50px
      width calc(100% - 180px)
      overflow auto
      grid-column-gap 16px
      &::-webkit-scrollbar
        height 4px
      &::-webkit-scrollbar-track
        background $main-green
        border-radius 20px
      &::-webkit-scrollbar-thumb
        background #FFFFFF
        border-radius 20px

@media screen and (max-width: $mobile)
  .news
    margin-bottom 80px
    
    &__title
      font-weight 500
      font-size 24px
      line-height 20px
      margin-bottom 32px
    &__content
      padding 0 16px 50px
      width calc(100% - 32px)
      max-height: fit-content
      overflow-y: hidden
    &__item
      max-height: 354px