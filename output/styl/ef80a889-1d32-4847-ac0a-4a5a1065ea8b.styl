// Form & input components

// General input
.form__inputGroup
  position: relative
  border: 1px solid color-secondary-stroke

.form__inputGroup--empty
  padding: 1.125rem 1rem

.form__inputGroup--filled
  padding: 1.5rem 1.75rem 0.75rem 1rem

.form__inputGroup--success
  border: 1px solid color-success

.form__inputGroup--wrong
  border: 1px solid color-brand

.form__inputLabel
  position: absolute
  top: 0.5rem
  left: 1rem
  font-size: 0.75rem
  opacity: 0.4

.form__inputLabel--success
  opacity: 0.8
  color: color-success

.form__inputLabel--wrong
  opacity: 0.8
  color: color-brand

.form__input
  background: transparent
  border: none
  width: 100%
  font-family: font-default

// Checkbox
.form__inputGroupCheckbox
  width: 1.25rem
  height: 1.25rem
  display: flex
  justify-content: center
  align-items: center

.form__inputGroupCheckbox--unchecked
  border: 2px solid color-secondary-stroke

.form__inputGroupCheckbox--checked
  border: 2px solid color-success

.form__inputCheckbox
  display: none

// Radio button
.form__inputGroupRadio
  font-size: 0.8rem
  cursor: pointer
  display: flex
  justify-content: space-between

.form__inputGroupRadio:hover
  opacity: 0.6

.form__inputDetailRadio
  display: flex
  flex-direction: column
  justify-content: center

.form__inputGroupRadio--empty
  padding: 0.75rem 1rem

.form__inputGroupRadio--success
  background-color: rgba(color-success, 0.1)

.form__inputLabelRadio
  font-size: 0.75rem
  opacity: 0.4
  margin-bottom: 0.25rem
  cursor: pointer

.form__inputLabelRadio--labelOnly
  cursor: pointer

.form__inputRadio
  display: none

/* Chrome, Firefox, Opera, Safari 10.1+ */
.form__input::placeholder 
  color: color-primary-text
  opacity: 0.4 /* Firefox */

.form__input:focus
  outline: none !important;

.form__textarea
  resize: none
  font-family: font-default

.form__charCounter
  font-size: 0.75rem
  font-weight: 700
  opacity: 0.4
  bottom: 5px
  right: 5px
  position: absolute

.form__validationIcon
  position: absolute
  margin-top: auto
  margin-bottom: auto
  top: 0
  bottom: 0
  right: 10px
  width: 1rem

.form__error-message
  font-size: 0.75rem
  color: color-brand