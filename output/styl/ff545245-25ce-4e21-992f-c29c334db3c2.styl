*   
    margin 0
    padding 0

body 
    background-color #f2f2f2

.conteiner
    width 90%
    max-width 1200px
    margin 20px auto
    display grid
    grid-gap 20px
    grid-template-columns repeat(2, 1fr)
    grid-template-rows repeat(2, auto)
    grid-template-areas 'header header header' 'contenido contenido contenido'

.header
    grid-area header
    text-align center
    font-size 20px
    padding 20px
    border-radius 20px
    background #fff

input[type=text] 
    width 50%
    box-sizing border-box
    border 2px solid #ccc
    border-radius 4px
    font-size 16px
    background-color white
    background-position 10px 10px
    background-repeat no-repeat
    padding 12px 20px 12px 40px


input[type=submit] 
    background-color #4c7daf
    color white
    padding 12px 20px
    border none
    border-radius 4px
    cursor pointer
    margin-top 5px

input[type=submit]:hover 
    background-color #7898b9

.loader
    display none
    margin auto

.cont
    grid-area contenido
    display grid
    grid-template-columns 1
    grid-gap 20px
    display none

.conteiner-info
    grid-area container-info
    display flex
    box-shadow 0px 0px 70px rgba(102, 102, 102, 0.2)
    background white

.img
    width 80%
    height auto
    border-radius 4%

.conteiner-info .conteiner-txt
    padding 20px
    display grid
    flex-direction column
    width 100%
    text-align justify 

.conteiner-info .conteiner-img
    width 50%

.conteiner-info .info
    margin-bottom 20px 
    color #62686b
    font-size 20px 	

.conteiner-img
    min-height 100%
    width 100%
    text-align center
    margin-top 10px

.nombre
    text-align center
    text-transform: uppercase;
    color #62686b
    font-size 50px 
.born
    text-align center
    color #62686b
    font-size 20px

.menu .enlaces
    display flex
    justify-content space-between
    align-items center
    width 100%
    max-width 1200px
    flex-direction row

.menu .enlaces a
    padding 10px
    color #000
    display inline-block
    text-decoration none
    font-weight 400
    width 100%
    text-align center
    transition 0.2s ease all
    font-size 20px    

.menu .enlaces a:hover
    color #2E64FE
    padding-bottom 3px

.menu .btn-menu
    display none
    color black
    text-decoration none

@media screen and (max-width: 806px)
    #header .menu 
        flex-direction column
        display flex
        flex-direction row
        justify-content space-between
        width 100%
        padding 1em

    #header .menu .btn-menu
        display inline-block

    #header .menu .enlaces
        display flex
        justify-content space-between
        align-items center
        width 100%
        max-width 1200px
        flex-direction row     

