@import '../reset'
@import 'url'
a
    outline none
    text-decoration none
.clear
    clear both
    overflow hidden
    height 0
body
    font-size 12px
    font-family '宋体'
    color #99B9D0
.container
    min-width 1000px
    background #14202e url($bg) center top no-repeat
    .content
        min-height 700px
        width 1000px
        margin 0 auto
        position relative
        .logo_link
            position absolute
            top 20px
            left 45px
            width 250px
            height 90px
        .nav
            position absolute
            width 380px
            height 39px
            left 592px
            top 4px
            overflow hidden
            a
                position absolute
                background url($blank) 0 0 no-repeat
                top 0px
                height 39px
                width 88px
                display inline-block
                &.nav_index
                    width 111px
                    left 0px
                    &:hover
                        background url($btn) -4px -198px no-repeat
                &.nav_guider
                    left 111px
                    &:hover
                        background url($btn) -115px -198px no-repeat
                &.nav_pay
                    left 199px
                    &:hover
                        background url($btn) -203px -198px no-repeat
                &.nav_bbs
                    left 287px
                    width 111px
                    &:hover
                        background url($btn) -291px -198px no-repeat
        .fn_group
            position absolute
            top 308px
            left 11px
            width 201px
            height 300px
            a
                display block
                height 45px
                &.fn_download_btn
                    height 60px
                    &:hover
                        background url($btn) -5px -5px no-repeat
                &.fn_reg_btn:hover
                    background url($btn) -5px -65px no-repeat
                &.fn_activate_btn:hover
                    background url($btn) -5px -110px no-repeat
                &.fn_pay_btn:hover
                    height 40px
                    background url($btn) -5px -155px no-repeat
        .promotions
            position absolute
            top 551px
            left 16px
            a
                display block
                width 190px
                height 92px
                border solid 1px #003E4D
                margin-bottom 1px
                img
                    width 190px
                    height 92px
        .bread_path
            position absolute
            top 345px
            right 160px
            color #75c4ff
            a
                color #75c4ff
        .news_detail
            padding 390px 0 0 219px
            width 771px
            left 200px
            top 380px
            h1
                text-align center
                font-size 16px
                font-weight bold
                color #00c3ff
                padding-bottom 5px
            .time
                text-align center
                padding-top 5px
                color #4f6fd4
            .news_text
                padding 30px 40px 20px 40px
                font-size 14px
                line-height 22px
                color #7cb2e0
                background-color #031231
                img
                    margin 10px 0
                a
                    color #fff
                p
                    text-indent 28px
                strong
                    font-weight bold
                .biaoti_1
                    //background url($biaoti1) -5px -6px no-repeat
                    background url($biaoti1) 0 0 no-repeat
                    width 620px
                    height 29px
                    line-height 31px
                    color #55C8E5
                    padding-left 35px
                .biaoti_2
                    height 30px
                    line-height 32px
                    padding-left 55px
                    width 620px
                    color #55C8E5
                    //background url($biaoti2) -4px -47px no-repeat
                    background url($biaoti2) 0 0 no-repeat
            .forward
                padding 30px 0 30px 50px
                background #031231 url($weibo) 130px 30px no-repeat
                color #5F8EA0
                margin-bottom 10px
                a
                    display inline-block
                    width 15px
                    height 15px
                    margin-left 9px
            .emotion
                background-color #092845
                padding 0 50px
                color #5F8EA0
                margin-bottom 10px
                .emotion_content
                    border-top solid 1px #1E4861
                    padding 30px 0
                    .vote_result
                        padding 30px 0 0 50px
                        height 80px
                        .result_chat
                            float left
                            position relative
                            width 80px
                            height 80px
                            margin-right 20px
                            span
                                position absolute
                                display block
                                left 0
                                bottom 0
                                height 1px
                                width 80px
                                background url($vote) center bottom repeat-y
                                .text
                                    position absolute
                                    text-align center
                                    top -20px
                                    width 80px
                    .vote_btn
                        height 80px
                        padding 20px 0 30px 50px
                        a
                            float left
                            width 80px
                            height 80px
                            position relative
                            margin-right 20px
                            span
                                position absolute
                                width 80px
                                text-align center
                                bottom -30px
                                height 20px
                                color #5F8EA0
                            &.jiong
                                background url($emotion) 10px 0 no-repeat
                                &:hover
                                    background-position 10px -90px
                            &.qidai
                                background url($emotion) -80px 0 no-repeat
                                &:hover
                                    background-position -80px -90px
                            &.geili
                                background url($emotion) -175px 0 no-repeat
                                &:hover
                                    background-position -175px -90px
                            &.guanzhu
                                background url($emotion) -270px 0 no-repeat
                                &:hover
                                    background-position -270px -90px
                            &.nanguo
                                background url($emotion) -365px 0 no-repeat
                                &:hover
                                    background-position -365px -90px
                            &.luguo
                                background url($emotion) -460px 0 no-repeat
                                &:hover
                                    background-position -460px -90px
            .related_news
                background #031231 url($related) 10px 10px no-repeat
                padding 55px 20px 20px 30px
                height 150px
                overflow hidden
                margin-bottom 25px
                img
                    float left
                    border solid 1px #054666
                    width 250px
                    height 142px
                    margin-right 20px
                ul
                    float left
                    width 440px
                    li
                        line-height 24px
                        height 24px
                        padding-left 10px
                        background url($news_icon) 0 9px no-repeat
                        a
                            width 330px
                            float left
                            color #72b7ff
                            height 24px
                            overflow hidden
                        span
                            float right
                            width 60px
                            height 24px
                            overflow hidden
            #copyright
                position relative
                .copyright_content
                    background-color #031231
                    padding 20px 10px 20px 140px
                    line-height 20px
                .syyx_logo
                    background url($copyright_logo) 0 0 no-repeat
                    width 130px
                    height 60px
                    position absolute
@import '../../../components/float_reg/main'