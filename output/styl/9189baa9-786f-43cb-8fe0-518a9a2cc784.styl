@import 'common/index';

#ts_main_zhinengyw {
    width: 100%;

    // 智能运维
    .section_zhinengyw {
        width: 100%;
        height: 0;
        padding-bottom: 31.25%;
        color: #ffffff;
        background: url('@/assets/img/zhinengyw/deoifmklad.jpg') no-repeat center center;
        overflow: hidden;
        background-size: 100% 100%;
        position: relative;

        &:before {
            content: ' ';
            position: absolute;
            width: 100%;
            height: 0;
            padding-bottom: 31.25%;
            background-color: rgba(9, 28, 122, 0.6);
        }

        .title {
            font-size: 60px;
            font-weight: bold;
            line-height: 60px;
            letter-spacing: 5px;
            margin: 238px auto 0px auto;
            text-align: center;
        }

        .subtitle {
            font-size: 18px;
            line-height: 30px;
            margin: 14px auto 0px auto;
            text-align: center;
        }

        .exp {
            font-size: 20px;
            line-height: 20px;
            letter-spacing: 1px;
            margin: 32px auto 0px auto;
            text-align: center;
        }
    }

    .section_pingtainengli {
        width: 100%;
        height: 613px;
        background: #FFFFFF;
        overflow: hidden;
        position: relative;

        .pingtainengli-title {
            font-size: 36px;
            line-height: 36px;
            color: #101426;
            margin: 80px auto 0px auto;
            letter-spacing: 5px;
            text-align: center;
            position: relative;

            &:after {
                title_after();
            }
        }

        .pingtainengli-subtitle {
            font-size: 18px;
            line-height: 18px;
            color: #666666;
            margin: 43px auto 0px auto;
            text-align: center;
        }

        .pingtainengli-item-list {
            margin: 66px auto 0px auto;
            width: $g-width;
            height: 305px;
            display: flex;
            justify-content: space-between;

            .pingtainengli-item {
                width: 320px;
                height: 100%;

                .pingtainengli-item-img {
                    width: 100%;
                    height: 180px;
                    border-radius: 11px;
                    overflow: hidden;
                }

                .pingtainengli-item-title {
                    font-size: 20px;
                    line-height: 30px;
                    color: #000000;
                    font-weight: 600;
                    margin: 20px auto 0px auto;
                    text-align: center;
                }

                .pingtainengli-item-chip {
                    display: flex;
                    flex-wrap: wrap;
                    justify-content: space-between;
                    align-content: space-between;
                    width: 245px;
                    height: 55px;
                    margin: 17px auto 0px auto;

                    .chip {
                        width: 94px;
                        border: 1px dashed #D1D1D1;
                        border-radius: 5px;
                        text-align: center;
                        width: 85px;
                        font-size: 14px;
                        height: 20px;
                        line-height: 20px;
                        color: #666666;
                    }
                }

                .img-1 {
                    background: url('@/assets/img/zhinengyw/z1031.jpg') no-repeat center center;
                    background-size: 100% 100%;
                }

                .img-2 {
                    background: url('@/assets/img/zhinengyw/z1030.jpg') no-repeat center center;
                    background-size: 100% 100%;
                }

                .img-3 {
                    background: url('@/assets/img/zhinengyw/z1029.jpg') no-repeat center center;
                    background-size: 100% 100%;
                }
            }
        }
    }

    .section_chanpingnengli {
        width: 100%;
        height: 560px;
        background: #F4F4F4;
        overflow: hidden;

        .chanpingnengli-title {
            font-size: 36px;
            line-height: 36px;
            color: #101426;
            margin: 80px auto 0px auto;
            letter-spacing: 5px;
            text-align: center;
            position: relative;

            &:after {
                title_after();
            }
        }

        .chanpingnengli-item-list {
            width: $g-width;
            margin: 81px auto 0px auto;
            display: flex;
            justify-content: space-between;

            .chanpingnengli-item {
                height: 100%;
                width: 185px;

                .chanpingnengli-item-img {
                    width: 100%;
                    height: 120px;
                }

                .chanpingnengli-item-title {
                    font-size: 18px;
                    line-height: 18px;
                    color: #101426;
                    font-weight: 600;
                    margin: 20px auto 0px auto;
                    text-align: center;
                    letter-spacing: 1px;
                }

                .chanpingnengli-item-chip {
                    font-size: 14px;
                    line-height: 22px;
                    color: #666666;
                    letter-spacing: 1px;
                    width: 100%;
                    margin: 21px auto 0px auto;
                    text-align: center;
                }

                .img-1 {
                    background: url('@/assets/img/zhinengyw/mbz460.png') no-repeat center center;
                    background-size: 65% 100%;
                }

                .img-2 {
                    background: url('@/assets/img/zhinengyw/mbz461.png') no-repeat center center;
                    background-size: 65% 100%;
                }

                .img-3 {
                    background: url('@/assets/img/zhinengyw/mbz462.png') no-repeat center center;
                    background-size: 65% 100%;
                }

                .img-4 {
                    background: url('@/assets/img/zhinengyw/mbz463.png') no-repeat center center;
                    background-size: 65% 100%;
                }

                .img-5 {
                    background: url('@/assets/img/zhinengyw/mbz464.png') no-repeat center center;
                    background-size: 65% 100%;
                }
            }
        }
    }

    .section_chanpingtixi {
        width: 100%;
        height: 579px;
        background: #FFFFFF;
        overflow: hidden;

        .chanpingtixi-title {
            font-size: 36px;
            line-height: 36px;
            color: #101426;
            margin: 77px auto 0px auto;
            letter-spacing: 5px;
            text-align: center;
            position: relative;

            &:after {
                title_after();
            }
        }

        .chanpingtixi-subtitle {
            height: 18px;
            font-size: 18px;
            line-height: 18px;
            color: #666666;
            margin: 43px auto 0px auto;
            text-align: center;
            letter-spacing: 1px;
        }

        .chanpingtixi-item-list {
            width: $g-width;
            height: 265px;
            margin: 60px auto 0px auto;
            display: flex;
            justify-content: space-between;

            .chanpingtixi-item {
                width: 240px;
                height: 100%;

                .chanpingtixi-item-img {
                    width: 240px;
                    height: 240px;
                }

                .chanpingtixi-item-title {
                    width: 180px;
                    height: 50px;
                    background: #EBB00E;
                    border-radius: 29px;
                    font-size: 22px;
                    font-weight: 500;
                    line-height: 50px;
                    color: #FFFFFF;
                    text-align: center;
                    margin: -25px auto 0px auto;
                    position: relative;
                }

                .img-1 {
                    background: url('@/assets/img/zhinengyw/z1032.png') no-repeat center center;
                    background-size: 100% 100%;
                    position: relative;

                    &:after {
                        content: ' ';
                        width: 80px;
                        height: 4px;
                        background: #00AEEB;
                        position: absolute;
                        right: -107px;
                        top: 118px;
                    }
                }

                .img-2 {
                    background: url('@/assets/img/zhinengyw/z1033.png') no-repeat center center;
                    background-size: 100% 100%;
                    position: relative;

                    &:after {
                        content: ' ';
                        width: 80px;
                        height: 4px;
                        background: #00AEEB;
                        position: absolute;
                        right: -107px;
                        top: 118px;
                    }
                }

                .img-3 {
                    background: url('@/assets/img/zhinengyw/z1034.png') no-repeat center center;
                    background-size: 100% 100%;
                    position: relative;

                    &:after {
                        content: ' ';
                        width: 80px;
                        height: 4px;
                        background: #00AEEB;
                        position: absolute;
                        right: -107px;
                        top: 118px;
                    }
                }

                .img-4 {
                    background: url('@/assets/img/zhinengyw/z1035.png') no-repeat center center;
                    background-size: 100% 100%;
                    position: relative;
                }
            }
        }
    }
}
