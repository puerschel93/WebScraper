// Helpers
padding-zero()
  padding: 0 !important

margin-zero()
  margin: 0 !important

display-flex()
  display: -webkit-box
  display: -ms-flexbox
  display: flex

float(a)
  float: a !important
  text-align: a !important

// Header
.site-header
  border-radius: 0 !important
  box-shadow: 0 1px 12px 0 rgba(34, 36, 38, .24) !important

.ui.menu
  .item
    font-weight: 500

    &:hover, &:active
      background: transparent !important

    &.logo
      padding-top: 0
      padding-bottom: @padding-top
      font-weight: bold

      img
        width: auto
        max-height: 2em

    &.searchbar
      padding-top: 0
      padding-bottom: @padding-top
      padding-left: @padding-top

      input
        border-radius: 2em
        padding: 5px 0
        width: 20em

.right.menu
  &#mobile-only .item
    padding-zero()
  .item
    padding-left: 0

// Main content
.site-main
  background: #e2e2e2 !important
  padding-zero()

.ui.content.container
  padding: 0.5em 2.5em
  margin-bottom: 1.5em

  //For pad devices and 4:9 screens
  @media (max-width: 1199px) and (min-width: 768px)
    padding: 0.5em 0

  //For mobile devices
  @media (max-width: 767px)
    padding-zero()

// Post
.post-list-item
  .label.node-link
    font-weight: normal
    padding: 5px

  .label.disqus-comment-count
    padding: 2px 10px !important
    min-height: inherit

h1.post.title
  margin-top: 15px !important

  //For mobile devices
  @media (max-width: 767px)
    margin-bottom: 10px !important
    font-size: 18px
    font-weight: normal

// Post content
.post.content
  p
    margin: 1em 0 !important

    &:first-child
      margin-top: 0 !important

    &:last-child
      margin-bottom: 0 !important

  img
    max-width: 100%
    margin: 5px 0

  hr
    border: none
    height: 1px
    color: #e2e2e2
    background-color: @color
    margin-bottom: 1em

  ul, ol
    li
      padding-zero()
      margin-zero()

  blockquote
    border: 1px solid #e2e2e2
    border-left: 5px solid #e2e2e2
    padding: 1em

    footer
      text-align: right

      cite:before
        content: '——'

// TOC
.toc
  list-style-type: none
  padding-zero()
  margin-zero()

  .toc-child
    list-style-type: none
    padding: 0 0 0 2em

// Small menu
.ui.small.menu .item
  margin-zero()

// Button
.ui.button
  padding-left: 10px !important
  padding-right: 10px !important

  &.with.small.padding
    padding: 6px !important

// Avatar
.site-avatar
  max-width: 48px !important

  //For mobile devices
  @media (max-width: 767px)
    .post-list-item &
      max-width: 32px !important

    .float.right&
      max-width: 48px !important

// Node
.site-node
  // Node icon
  &.site-avatar
    max-width: 73px !important
    height: auto
    padding-right: 10px

// Label
.site-node.label, .site-tag.label
  font-weight: normal
  margin-bottom: 3px

.social.label
  margin-bottom: 3px

  .icon
    margin-left: 2px;
    margin-right: 5px;

  img.icon
    width: auto !important;
    height: 1.5em !important;

// Font size
normal-size = 12px
big-size = 14px

.content, .site-title, .ui.list .item, table
  font-size: normal-size !important

.post.content, .site-node-list a, .paginator .page-number
  font-size: big-size !important

// Cards
.ui.card, .ui.cards .card
  .content
    padding: 10px

    // For mobile devices
    @media (max-width: 767px)
      padding: 5px

// Statistic
.statistic
  margin-left: auto !important
  margin-right: auto !important
  margin-bottom: 0 !important

  .value, .label
    font-weight: normal !important

  .label
    color: #c5c5c5 !important

// Paginator
.paginator
  margin: 3px 0

  .page-number
    background: #eaeaea
    padding: 5px
    border-radius: 2px
    font-size: 14px

// Footer
.ui.footer
  &#mobile-only
    .content
      margin-bottom: 0 !important

    a.float.right
      font-weight: bold

  &, a
    color: #a3a3a3

// Float
.float
  &.left
    float: left
  &.right
    float: right

// Inline
.meta.inline
  display: inline-block

// For computer
#mobile-only
  display: none

  // For mobile devices
  @media (max-width: 767px)
    display: block

    .right.menu&
      display-flex()

// For mobile devices
#pc-only
  @media (max-width: 767px)
    display: none
