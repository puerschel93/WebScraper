.wrap
  width 100%
  .content-header
    width 100%
    box-sizing border-box
    height 70px
    padding 2.5px 0
    &.header-fixed
      position fixed
      z-index 20
      background-color: #fff;
      top: 0
      left: 0
      height 0
      overflow hidden
      opacity 0
      transition all .5s
      &.active
        height 70px
        opacity 1
    .header
      width 1200px
      height 100%
      background-color #fff
      box-sizing border-box
      padding 0 15px
      margin 0 auto
      display flex
      justify-content space-between
      align-items center
      .location-nav
        width 727.88px
        height 42px
        display flex
        justify-content space-between
        .location
          width 151px
          height 42px
          display flex
          justify-content space-around
          align-items center
          >span
            font-weight bold
            color black
        .header-nav
          display flex
          .header-nav-item
            font-weight bold
            padding 10px 15px
            >a
              line-height 26px
              text-align center
              &.active
                color red
          .item-login
            >a
              background-color #f00
              color white
              display block
              width 76px
              height 28px
              border-radius 5px
  .content-container
    width: 100%
    overflow hidden
    background-color: #eee
    .title-wrap
      width 100%
      height: 140px
      margin-top: 15px
      background-color: #fff
      .title-content
        width: 1200px
        height: 100%
        margin: 0 auto;
        display flex
        justify-content space-between
        align-items center
        .title-left
          width: 534px;
          height: 120px
          padding-left: 20px;
          >b
            font-size 36px
            line-height 140px
          >i
            margin-left 5px
            font-size 13px
            color #7e8c8d
            font-style normal
          >span
             font-size 14px
          .order-time
            color #e94840
        .title-right
          display flex
          width: 308.31px
          justify-content space-around
          align-items center
          >div
            text-align center
            font-size 15px
            >div:first-of-type
              color #e94840
          >span
            height 20px
            width: 2px;
            background-color: #eee;
    .black-nav
      background-color: #000;
      width: 100%
      height: 40px
      .nav-list
        width 1200px
        height: 100%
        margin: 0 auto
        display flex
        >li
          width: 140px
          height: 100%
          text-align center
          >a
            color white
            line-height 40px
            font-size 15px
    .content-list-wrap
      width: 1200px
      margin: 20px auto 0;
      display flex
      justify-content space-between
      .server-shop-rating
        width 960px
        background-color: #fff;
        .severs
          width: 100%
          >h3
            width 912px
            height: 59px
            line-height 60px
            margin: 0 auto;
            font-weight normal
            border-bottom: 1px solid #eee;
            >span
              height: 100%
              box-sizing border-box
              display inline-block
              border-bottom #e94840 4px solid

          .server-item
            display flex
            width 100%
            height: 200px
            box-sizing border-box
            padding 25px
            &:hover
              background-color: #eee;
            >img
              width: 150px;
              height: 150px
            .server-desc
              margin-left: 25px;
              display flex
              flex-direction column
              justify-content space-between
              .name
                font-size 18px
                padding-top: 15px;
              .desc
                font-size 14px
                margin-top: -10px;
                color #7e8c8d
              .price
                color #e94840
                .num
                  font-weight bold
                  font-size 26px
            .cont
              font-size 14px
              color #7e8c8d
              margin-top 135px
              margin-left: 270px;
        .look-more
          width 100%
          background-color: #eee;
          height: 70px
          display flex
          justify-content center
          align-items center
          >div
            width: 200px
            height: 50px
            border-radius 5px
            background-color: #fff;
            color #7e8c8d
            text-align center
            line-height 50px
        .shop-detail
          >h3
            width 912px
            height: 59px
            line-height 60px
            margin: 0 auto;
            font-weight normal
            border-bottom: 1px solid #eee;
          .shop-name
            width: 910px;
            height: 40px
            margin: 10px auto;
            line-height 40px
            font-size 18px
            >img
              font-size 0
              vertical-align middle
              margin-left: 5px;
          .detail
            width: 910px;
            height: 140px
            line-height 2
            margin: 10px auto 30px;
        .rating
          width 100%
          margin-top 10px
          >h3
            width 912px
            height: 59px
            line-height 60px
            margin: 0 auto;
            font-weight normal
            border-bottom: 1px solid #eee;
            >span
              margin-right: 15px;
              height: 100%
              box-sizing border-box
              display inline-block
              border-bottom #e94840 4px solid

          .rat
            .rating-item
              display flex
              width 912px
              margin: 20px auto 0
              border-bottom 1px solid #eee
              box-sizing border-box
              .header-icon
                width: 40px
                height: 40px
              .rating-info
                margin-left: 20px;
                .username
                  padding: 5px 0;
                  font-size 15px
                .star
                  margin-top: 10px;
                  font-size 14px
                  >span
                    margin-left: 10px;
                  >img
                    width: 10px
                    height: 10px

                .rating-content
                  margin-top: 10px;
                .location
                  margin-top: 20px
                  font-size 14px
                  color #7e8c8d
                  >span
                    margin-left: 5px
                .line
                  width 100%
                  height: 1px
                  background-color: #eee;
                  margin: 15px 0
                .reply
                  width 100%
                  font-size 14px
                  color #7e8c8d
                  margin-bottom: 15px
                  >span:first-of-type
                    color skyblue
        .line
          width 100%
          height: 20px
          background-color: #eee;
        .paging
          width: 100%;
          height 152px
          display flex
          justify-content center
          align-items center
          .up,.down,.item
            width: 80px
            height: 30px
            box-sizing border-box
            border 1px solid #eee
            text-align center
            color #7e8c8d
            font-size 15px
            line-height 30px
            margin: 0 5px;
            cursor pointer
          .item
            width 32px
            height: 30px;
            &.active
              color white
              background-color: #e94840;

      .ad
        width 230px
        >div
          width 100%
          height: 290px
          background-image: url('../images/two.jpg');
          background-repeat: no-repeat;
          >img
            width 100%
            transform scale(.6)
  .footer
    width: 100%;
    padding-top: 100px;
    .safeguard
      width 100%
      text-align center
      .safeguard-title
        font-size 28px
        padding-bottom 15px
        >span
          color red
      .safeguard-desc
        font-size 23px
        font-weight normal
      .safeguard-promise
        display flex
        margin-top 20px
        justify-content center
        .safeguard-icon
          display flex
          margin: 0 10px;
          justify-content center
          align-items center
          >span
            font-size 18px
          >img
            width 22px
            height: 22px
            margin: 0 10px;
    .hot-city-wrapper
      width 100%
      margin-top: 50px;
      .hot-city
        width 1200px
        height 120px
        margin 0 auto
        display flex
        box-sizing border-box
        .hot-city-title
          font-size 18px
          text-align center
          width 80px
          font-weight bold
        .hot-city-name
          width: 1090px
          height: 93px
          display flex
          flex-wrap wrap
          margin-left: 50px;
          .city-name
            width: 98.09px
            height: 30px
            >a
              color #7e8c8d
    .partner-wrapper
      width 100%
      .partner
        width 1200px
        margin: 0 auto;
    .copyright-wrapper
      width 100%
      padding-bottom: 20px;
      .copyright
        width: 1200px;
        margin: 20px auto 0;
        text-align: left;
        color #7e8c8d
