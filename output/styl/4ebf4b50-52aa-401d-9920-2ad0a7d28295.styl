.shopping-cart {
  .cart {
    &__wrap {
      wrapper();
      margin-top: 85px;
      margin-bottom: 80px;

    }
    &__item {
      col();
      col-12();
      display: flex;
      flex-wrap nowrap;
      justify-content: left;
      padding-top: 20px;
      padding-bottom: 26px;
      border-bottom: 2px solid #fbfbfb
      .title {
        &__productDetails {
          col-5();
        }
        &__productInfo {
          col-7();
          display: flex
          flex-wrap nowrap
          justify-content: space-between
          text-transform uppercase;
          flex-grow: 1;
          width: 33.3%
        }

      }
      .prod {
        &__productDetails {
          col-5();
          display: flex;
          flex-wrap: nowrap;
          justify-content: left;

        }
        &__img {

        }
        &__options {
          margin-left: 20px;

        }
        &__title {
          margin-top: 15px;
          font-size: 13px;
          margin-bottom: 40px;
          text-transform: uppercase

        }
        &__color {
          font-size: 13px;
          color: #575757;
          line-height: 20px;
          &--red {
            font-weight: 300;
            color: $brownish-grey
          }
        }
        &__size {
          font-size: 13px;
          color: #575757;
          line-height: 20px;
          &--xii {
            font-weight: 300;
            color: $brownish-grey
            text-transform uppercase
          }
        }

        &__productInfo {
          col-7();
          display: flex
          flex-wrap nowrap
          justify-content: space-between
          text-transform uppercase;
          padding-left: 45px;

        }
        &__info {
          col-7()
          display: flex;
          flex-wrap: nowrap
          justify-content: space-between;
          flex-grow: 1
          align-items: center;
          .info {
            &__quantity {
              input {
                width: 54px;
                height: 30px;
                background-color: white;
                border: solid 1px #eaeaea;
                font-size: 13px;
                color: #656565;
                padding-left: 23px;
                box-sizing: border-box
              }
            }
            &__action {
              button {
                width: 0;
                height: 0;
                padding: 0;
                border: none;
              }
            }

          }

        }
      }

    }
    &__title {
      padding-bottom: 20px;
    }

      &__prod:hover{
        border-color: #a3a3a3
      }
    &__btn {
      col();
      col-12();
      display: flex;
      flex-wrap: nowrap
      justify-content: space-between;
      padding-top: 44px;
      padding-bottom: 44px;
      button:focus {
        outline: none
        box-shadow inset 0 0 2px 2px rosy-pink;
      }
      .btn {
        &__clear {
          text-transform: uppercase
          padding: 20px 38px;
          background-color: white;
          border: solid 1px #eaeaea;
          font-size: 14px;
          font-weight: bold;
          color: #4a4a4a;
        }
        &__continue {
          text-transform: uppercase
          padding: 20px 38px;
          background-color: white;
          border: solid 1px #eaeaea;
          font-size: 14px;
          font-weight: bold;
          color: #4a4a4a;

        }
      }
    }

    &__shipping {
      col();
      col-12();
      display: flex;
      flex-wrap: nowrap
      justify-content: space-between
      margin-top: 19px;
      .shippingAdress {
        col-4();
        &__title {
          font-size: 16px;
          font-weight: bold;
        }
        &__input {
          width: 355px;
          height: 45px;
          background-color: white;
          border: solid 1px #eaeaea;
          box-sizing border-box
          padding-left: 18px;
          font-size: 13px;
          font-weight: 300;
          text-align: left;
          color: #b1b1b1;
          margin-top: 20px;
          &--country {
            margin-top: 22px;
            position: relative

          }
        }
          &__btn{
            background-color: $white;
            border: solid 1px #eaeaea;
            padding: 12px 14px;
            margin-top: 22px;
          }

      }
      .couponDiscount {
        col-4();
        &__title{
          font-size: 16px;
          font-weight: bold;
          text-transform: uppercase
        }
          &__text{
            font-size: 14px;
            font-weight: 300;
            color: #000000;
            margin-top: 28px;
          }
            &__input{
              width: 355px;
              height: 45px;
              background-color: white;
              border: solid 1px #eaeaea;
              font-size: 13px;
              font-weight: 300;
              color: #b1b1b1;
              padding-left: 17px;
              margin-top: 24px;
            }
              &__btn{
                margin-top:  25px;
                height: 35px;
                background-color: white;
                border: solid 1px #eaeaea;
                font-size: 11px;
                font-weight: bold;
                color: #4a4a4a;
                padding: 12px 18px;
              }




      }
      .total {
        col-4();
        height: 214px;
        background-color: #f5f3f3;
        &__wrap {
          padding: 40px 42px 42px;
        }
        &__sub {
          font-size: 11px;
          color: #4a4a4a;
          text-align: right
          &--price {
            margin-left: 15px;
          }
        }
        &__grand {
          margin-top: 15px;
          font-size: 16px;
          font-weight: bold;
          text-align: right;
          padding-bottom: 23px;
          border-bottom 1px solid #f1f0f0;
          margin-bottom: 17px;
          &--prise {
            margin-left: 15px;
            color: rosy-pink
          }
        }

        &__link {
          padding: 18px 42px;
          display: block
          background-color: rosy-pink;
          font-size: 16px;
          font-weight: bold;
          color: white;
        }
      }

    }
  }
}
