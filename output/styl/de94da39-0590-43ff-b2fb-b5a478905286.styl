@font-face {
  font-family: "Proxima Nova Light";
  src: url('../../fonts/Proxima Nova Light.ttf')
}

@font-face {
  font-family: "Proxima Nova Reg";
  src: url('../../fonts/Proxima Nova Reg Cyr.ttf')
}

@font-face {
  font-family: "Proxima Nova Semibold";
  src: url('../../fonts/Proxima Nova Semibold.ttf')
}

@font-face {
  font-family: "Proxima Nova Bold";
  src: url('../../fonts/Proxima Nova Bold.ttf')
}

@font-face {
  font-family: "Proxima Nova Extrabold";
  src: url('../../fonts/Proxima Nova Extrabold.ttf')
}

@font-face {
  font-family: "Proxima Nova Black";
  src: url('../../fonts/Proxima Nova Black.ttf')
}


@font-face {
  font-family: "PT Rouble Sans";
  src: url('../../fonts/PT Rouble Sans.ttf')
}


html {
  font-family: "Proxima Nova Reg";
}

a {
  color: inherit
}

.text {
  &_color {
    &_white {
      color: #ffffff

      .title,
      &.title {
        color: #ffffff
      }

      .title__divider {
        background-color: #ffffff;
      }

      .title__subtitle {
        color: #e5e5e5;
      }

      .crumbs__link {
        color: #ffffff;
      }

      .crumbs__icon {
        background-color: #ffffff
      }

      .btn_1 {
        color: #ffffff
      }
    }

    &_black {
      color: #454545;
    }

    &_primary {
      color: #ffea02
    }
  }

  &_line-through {
    text-decoration: line-through;
  }

  &_underline_hoverable {
    text-decoration: underline

    &:hover {
      text-decoration: none
    }
  }

  &_position {
    &_center {
      text-align: center

      .title__divider {
        margin-left auto
        margin-right auto
      }
    }
  }
}

.title {
  color: #393939;

  &__divider {
    margin-top: 10px
    width: 130px;
    height: 4px;
    border-radius: 2px;
    background-color: #393939;
  }

  &_h1 {
    margin-bottom: 42px
    font-family: "Proxima Nova Extrabold";
    font-size: 55px;

    .title__text_extra {
      font-family: "Proxima Nova Light";
      font-size: 30px;
    }

    .title__subtitle {
      margin-top: 20px
      font-size: 23px;
    }

    .title__divider {
      margin-top: 12px
    }
  }

  &_h2 {
    margin-bottom: 30px
    font-family: "Proxima Nova Semibold";
    font-size: 36px;

    .title__subtitle {
      font-size: 18px;
    }
  }

  &_h3 {
    margin-bottom: 22px
    font-family: "Proxima Nova Semibold";
    font-size: 26px;

    .title__subtitle {
      font-size: 15px;
    }

    .title__divider {
      margin-top: 6px
      width: 76px;
      height: 2px;
    }
  }

  &__subtitle {
    margin 14px 0 0 0
    font-family: "Proxima Nova Reg";
  }
}

.rouble {
  font-family: "PT Rouble Sans";
}

.dash {
  display: inline-block;
  width: 44px;
  height: 3px;
  background-color: #ffffff;

  &_small {
    width: 16px;
    height: 1px;
    background-color: #a2a2a2;
  }
}

.text-section {
  p {
    color: darken(#4b4b4b, 40%);
    font-size: 17px;
    line-height: 24px;
  }

  h3 {
    margin-bottom: 8px
    color: #393939;
    font-family: "Proxima Nova Semibold";
    font-size: 22px;
    line-height: 26px;
  }

  ul {
    margin: 10px 0 14px 0
  }

  li {
    margin: 5px 0;
    padding-left: 18px;
    font-size: 17px
    color: darken(#4b4b4b, 40%);

    &:before {
      top: 8px;
      width: 8px;
      height: 8px;
    }
  }

  .btn {
    margin-top: 16px
  }
}

@media (max-width: 1250px) {
  .title {
    &_h1 {
      font-size: 46px;

      .title__subtitle {
        font-size: 20px;
      }
    }
  }
}

@media (max-width: 1050px) {
  .title {
    &__divider {
      margin-top: 7px
      width: 100px;
      height: 3px;
    }

    &_h1 {
      margin-bottom: 36px
      font-size: 36px;

      .title__text_extra {
        font-size: 24px;
      }

      .title__subtitle {
        margin-top: 18px
        font-size: 17px;
      }

      .title__divider {
        margin-top: 10px
      }
    }

    &_h2 {
      margin-bottom: 24px
      font-size: 32px;

      .title__subtitle {
        font-size: 16px;
      }
    }

    &_h3 {
      font-size: 25px;
    }

    &__subtitle {
      margin 12px 0 0 0
    }
  }

  .text-section {
    .btn {
      margin-top: 0
    }
  }
}

@media (max-width: 600px) {
  .title {
    &__divider {
      margin-top: 5px
      width: 90px;
    }

    &_h1 {
      margin-bottom: 26px
      font-size: 30px;

      .title__text_extra {
        font-size: 16px;
      }

      .title__subtitle {
        font-size: 16px;
      }
    }

    &_h2 {
      margin-bottom: 20px
      font-size: 27px;

      .title__subtitle {
        font-size: 15px;
      }
    }

    &_h3 {
      margin-bottom: 20px
      font-size: 22px;

      .title__subtitle {
        font-size: 14px;
      }
    }

    &__subtitle {
      margin 9px 0 0 0
    }
  }

  .text-section {
    p {
      font-size: 16px;
      line-height: 23px;
    }

    h3 {
      font-size: 20px;
      line-height: 24px;
    }

    li {
      padding-left: 17px;
      font-size: 16px

      &:before {
        top: 7px;
        width: 7px;
        height: 7px;
      }
    }

    .btn {
      max-width 600px !important
    }
  }
}