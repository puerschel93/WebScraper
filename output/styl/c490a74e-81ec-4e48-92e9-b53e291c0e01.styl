.post
  width 90%
  margin 0px auto 30px
  .delete-modal
    margin-top 30px
    button
      background var(--primary-color)
      color var(--secondary-color)
      border 1px solid var(--dark-primary-color)
      border-radius 4px
      cursor pointer
      padding 6px 12px
      margin-right 10px
      font-family "Lato"
  .post-edit-delete
    margin 10px 0
    text-align right
    button
      background var(--primary-color)
      color var(--secondary-color)
      border 1px solid var(--dark-primary-color)
      border-radius 4px
      cursor pointer
      padding 6px 12px
      margin-right 10px
      font-family "Lato"
  .post-modifier
    margin 10px
    display flex
  .post-header
    display flex
    color var(--primary-color)
    margin-bottom 20px
    font-family "Lato"
    .profile-details
      width 100%
      display flex
      justify-content flex-start
      align-items center
      .profile-image
        display block
        height 50px
        width 50px
        border-radius 50%
        img 
          border 2px solid var(--dark-primary-color)
          height 50px
          width 50px
          border-radius 50%
          object-fit cover
      .profile-name
        display block
        p
          margin 0px 20px
    .post-details
      width 100%
      display flex
      flex-direction column
      justify-content center
      align-items center
      font-weight bold
  .post-body
    margin-bottom 20px
    .post-media-container
      width 100%
      margin-bottom 20px
      .post-image
        width 100%
    .post-empty-image-container
      width 100%
      .empty-post-image
        width 100%
    .post-description-container
      width 100%
      margin-bottom 20px
      .post-description
        font-family "Lato"
    .post-hashtag-container
      width 100%
      margin-bottom 20px
      color var(--primary-color)
      .post-hashtag
        font-family "Lato"
  .post-footer
    width 100%
    display flex
    justify-content space-between
    font-family "Lato"
    button
      font-family "Lato"
    .bite-sting-group
      display flex
      width 100%
      justify-content space-between
      align-items center
      margin 0px -10px
      .bite-post
      .sting-post
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        width 90%
        display flex
        justify-content space-between
        align-items center
        margin 0px 10px
        box-shadow 1px 1px 3px var(--dark-primary-color)
      .action
        width 100%
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        padding 6px 12px
        text-transform capitalize
        cursor pointer
        &:active
          background var(--dark-primary-color)
      .count
        width 100%
        text-align center
        color var(--primary-color)
        font-weight bold
    .buzz-group
      display flex
      justify-content flex-end
      align-items center
      width 100%
      .buzz-post
        width 35%
        button
          width 100%
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          background var(--primary-color)
          color var(--secondary-color)
          padding 6px 12px
          text-transform capitalize
          box-shadow 1px 1px 3px var(--dark-primary-color)
          cursor pointer
          &:active
            background var(--dark-primary-color)
      .buzz-post-drop-down
        width 35%
        position relative
        display block
        min-width 100px
        &:hover
          .drop-down-content
            display flex
            justify-content center
            align-items center
            flex-direction column
        .drop-down-button
          width 100%
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          background var(--primary-color)
          color var(--secondary-color)
          padding 6px 12px
          text-transform capitalize
          box-shadow 1px 1px 3px var(--dark-primary-color)
        .drop-down-content
          display none
          width 100%
          position absolute
          background #f9f9f9
          box-shadow 0 8px 16px 0 rgba(0, 0, 0, 0.2)
          border-radius 4px
          z-index 1
          .social-link
            width 100%
            padding 6px 12px
            background var(--primary-color)
            color var(--secondary-color)
            text-align center
            &:first-child
              border-top-left-radius 4px
              border-top-right-radius 4px
            &:last-child
              border-bottom-left-radius 4px
              border-bottom-right-radius 4px
            &:hover
              background var(--secondary-color)
              color var(--primary-color)
              cursor pointer
    .buttons-group
      width 100%
      display flex
      justify-content space-between
      .bite-sting
        display flex
        justify-content center
        margin 0 -5px
        .bite-post
        .sting-post
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          margin 0px 5px
          max-height 32px
      .buzz-post-mobile
        width 33%
        position relative
        display block
        .drop-down-button
          min-width 70px
          width 100%
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          background var(--primary-color)
          color var(--secondary-color)
          padding 6px 12px
          text-transform capitalize
          box-shadow 1px 1px 3px var(--dark-primary-color)
          position relative
          .icon
            position absolute
            right 5%
        .drop-down-content
          width 100%
          position absolute
          display flex
          justify-content center
          align-items center
          flex-direction column
          .social-link
            width 100%
            padding 6px 12px
            background var(--primary-color)
            color var(--secondary-color)
            text-align center
            &:first-child
              border-top-left-radius 4px
              border-top-right-radius 4px
            &:last-child
              border-bottom-left-radius 4px
              border-bottom-right-radius 4px
            &:focus, &:active
              background var(--secondary-color)
              color var(--primary-color)
      button
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        text-transform capitalize
        padding 6px 12px
        &:active
          background var(--dark-primary-color)
      .count
        text-align center
        color var(--primary-color)
        font-weight bold
        margin 0 5px
  .editForm
    width 100%
    img
      width 100%
    .form-input
      width 100%
      margin-bottom 15px
      input[type="text"]
      textarea
        font-family "Lato"
        width 100%
        color var(--primary-color)
        background transparent
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        padding 6px 12px
        resize none
        &::placeholder
            color var(--black-color)
      input[type="submit"]
        width 100%
        padding 6px 12px
        background var(--primary-color)
        color var(--secondary-color)
        font-family "Lato"
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        cursor pointer
        margin-top 5px
      .input-group
          display flex
          justify-content center
          align-items center
          margin 0px -5px
          label
            font-family "Lato"
            color var(--secondary-color)
            background var(--primary-color)
            padding 6px 12px
            border-radius 4px
            border 1px solid var(--dark-primary-color)
            margin 0px 5px
          input[type="text"]
            margin 0px 5px
    .file-upload
      display flex
      justify-content center
      align-items center
      margin 0px -5px
      .file-upload-button
        margin 0px 5px
        width 100%
        font-family "Lato"
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        text-align center
        .file-upload-instruction
          padding 6px 12px
      .file-name
        margin 0px 5px
        padding 6px 12px
        background var(--secondary-color)
        color var(--primary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        width 100%
        font-family "Lato"
        text-align center
      input[type="file"]
        display none