/* util class*/
.line-single 
  height 1px
  background #e5e5e5
  transform scaleY(0.5)
.line-part    
  height 0.2rem
  background #e5eef2  
.ell
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
.shadow 
  color #888888
.price-color 
  color #ed6460  
.main-color 
  color #14afff  
.fix 
  clear both
  &::after 
    content: ' '
    display: block
    clear both  
.overflow-hide
  overflow hidden   
.tcenter 
  text-align: center  
.tright
  text-align: right  
.tleft 
  text-align: left  
/* butns*/  
.text-icon
  padding-left: 20px
  font-size: 13px
  height: 16px
  line-height: 16px
  display: inline-block
  &.shield 
    background: url('../img/shield.png') no-repeat left  center
    background-size: 14px 
    &.true
      background: url('../img/shield-true.png') no-repeat left  center
      background-size: 14px 
  &.del 
    background: url('../img/del.png') no-repeat left  center
    background-size: 14px 
    &.true
      background: url('../img/del-true.png') no-repeat left  center
      background-size: 14px 
  &.over 
    background: url('../img/over.png') no-repeat left  center
    background-size: 14px 
    &.true
      background: url('../img/over-true.png') no-repeat left  center
      background-size: 14px 
  &.baned 
    background: url('../img/baned.png') no-repeat left  center
    background-size: 14px 
    &.true
      background: url('../img/baned-true.png') no-repeat left  center
      background-size: 14px 
  &.screen 
    background: url('../img/screen.png') no-repeat left  center
    background-size: 13px 
    &.true
      background: url('../img/baned-true.png') no-repeat left  center
      background-size: 13px 

.time-nav 
  display flex 
  justify-content space-around
  background #fff 
  position relative
  .item 
    width 60px
    flex none
    height 44px
    line-height 44px
    text-align center
    font-size 15px
    &.true 
      color #14afff
      border-bottom 2px solid #14afff

.audios-ls 
  .item 
    height 0.85rem
    line-height 0.85rem
    text-align left
    padding-left 0.4rem
    .content 
      display flex
      height 100%
      justify-content space-between
      .name 
        flex auto
        color #333
        font-size 14px
        .chapter 
          margin-right 10px
      .time
        flex none
        width 1.3rem
        display flex
        .txt 
          font-size 12px
          color #999999
        .icon
          flex auto  
          background url('../img/audio.png') no-repeat  right center
          background-size  0.38rem 0.32rem

.relate-audio
  display flex 
  justify-content space-between
  .item 
    width 3.3rem
    .img 
      width 100%
      height 1.93rem
    .name 
      font-size   13px
      height 33px
      overflow hidden
      line-height 18px
      margin-bottom 0.3rem
      margin-top 0.1rem
      color #555

.xbook
  width 100%
  height 0.7rem
  background url('../img/x.png') no-repeat 45% center
  background-size 0.38rem
  text-align center
  line-height 0.75rem
  text-indent 1rem

.author-type 
  display inline-block
  line-height: 0.32rem
  height 0.32rem
  background-color #3cbad3
  border-radius 0.15rem
  color #fff 
  font-size 0.24rem
  padding 0 0.1rem
.price-common
  display flex
  height 100%
  .curr-price
    font-size 15px
    color #ed6460
    margin-right 10px
  .err     
    color #999999
    text-decoration  line-through
    font-size: 13px
    padding-top:2px
  .check 
    width  0.4rem
    height 100%
    background url('../img/checked.png') no-repeat right center
    background-size 0.3rem
    &.true 
      background url('../img/checked-true.png') no-repeat right center
      background-size 0.3rem
.msg-price
  // padding 0 0.3rem
  .oper-my 
    display flex 
    height 0.85rem
    line-height 0.85rem
    justify-content space-between
    .add-book 
      color #14afff
      font-size 14px
    .buy  
      display flex 
      .name 
        margin-right 10px
      .price-common 
        line-height 0.85rem
      .check 
        width 0.5rem 
        height 0.85rem 
        background url(../img/checked.png) no-repeat right center
        background-size 16px  16px
        &.true 
          background url(../img/checked-true.png) no-repeat right center
          background-size 16px  16px
  .pay 
    height 0.85rem
    display flex 
    font-size 12px  
    color #333
    line-height 0.85rem
    justify-content space-between
    .right 
      height 100%
      flex 0 0 auto   
      img  
        width   0.32rem
        height 0.32rem
        vertical-align middle
        margin-left 5px
.send-btn
    border-radius 0.22rem
    text-align center
    border solid 1px #3cb4ff
    display inline-block
    color #3cb4ff
    font-size 11px
    padding 0 10px
    height 0.45rem
    line-height 0.45rem
    vertical-align middle
    box-sizing border-box
.btn 
  display inline-block
  width 1.2rem
  height 0.58rem
  background #14afff
  border-radius 3px
  text-align center
  line-height 0.58rem
  font-size 15px
  color #fff
#body 
  background:  #fff
  .minirefresh-theme-default .downwrap-content 
    padding: 16px 0px
    