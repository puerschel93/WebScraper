    .section_jueceshujugl {
        width: 100%;
        height: 840px;
        background: #F4F4F4;

        .section_jueceshujugl_container {
            margin: 0 auto;
            width: $g-width;
            height: 100%;
            position: relative;

            .section_jueceshujugl_itemlist {
                width: 786px;
                height: 708px;
                float: left;
                margin-top: 65px;
                display: flex;
                flex-direction: column;
                justify-content: space-between;

                .item {
                    width: 100%;
                    height: 126px;
                    display: flex;
                    align-items: center;
                    justify-content: space-between;

                    .item_i {
                        width: 58px;
                        height: 58px;
                        position: relative;

                        &:after {
                            content: ' ';
                            position: absolute;
                            width: 37px;
                            height: 2px;
                            background-color: #D9DEEA;
                            top: 28px;
                            left: 68px;
                        }
