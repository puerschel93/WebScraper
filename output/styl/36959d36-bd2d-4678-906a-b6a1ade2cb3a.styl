                        background: url('@/assets/img/amos/bz26bf.png') no-repeat center center;
                        background-size: 100% 100%;
                    }

                    .item_i_3 {
                        background: url('@/assets/img/amos/bz27bf.png') no-repeat center center;
                        background-size: 100% 100%;
                    }

                    .item_i_4 {
                        background: url('@/assets/img/amos/bz25bf.png') no-repeat center center;
                        background-size: 100% 100%;
                    }

                    .item_exp {
                        width: 640px;
                        height: 126px;
                        background: #FFFFFF;
                        box-shadow: 0px 10px 28px rgba(228, 228, 228, 0.5);
                        border-radius: 8px;
                        position: relative;

                        h5 {
                            font-size: 24px;
                            color: #1E272B;
                            font-weight: bold;
                            margin-top: 28px;
                            margin-left: 40px;
                        }

                        p {
                            font-size: 16px;
                            color: #1E272B;
                            margin-top: 28px;
                            margin-left: 40px;
                        }

                        &:before {
                            position: absolute;
                            content: ' ';
                            width: 24px;
                            height: 24px;
                            background: linear-gradient(145deg, #ACE0FD 0%, #0C8ED7 100%);
                            border-radius: 50%;
                            opacity: 0.2;
                            top: 51px;
                            left: -34px;
                        }

                        &:after {
                            position: absolute;
                            content: ' ';
                            width: 12px;
                            height: 12px;
                            background: linear-gradient(145deg, #ACE0FD 0%, #0C8ED7 100%);
                            border-radius: 50%;
                            top: 57px;
                            left: -28px;
                        }
                    }
                }
            }

            &:before {
                content: ' ';
                position: absolute;
                width: 1px;
                height: 860px;
                background-color: #D9DEEA;
                left: 305px - 275px;
                top: -21px;
            }

