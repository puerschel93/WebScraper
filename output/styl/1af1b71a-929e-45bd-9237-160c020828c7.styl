// ----- COLOR CODES -----

$pf-primary-faded = #FDE1D8
$pf-primary-bright = #FAC3B3  
$pf-primary =          #F79678
$pf-primary-dark =     #F4693E

$pf-secondary-bright = #58C6BE
$pf-secondary =         #3EB6AE
$pf-secondary-dark = #349891

$pf-white =         #fbfbf2
$pf-muted-faded =   #ededed
$pf-muted-bright =  #b5b5b5
$pf-muted =         #4d4d4d
$pf-muted-dark =    #403f4c

$pf-dark =          #262626


// ----- TEXT CLASSES -----
.pf-primary-faded
  color $pf-primary-faded
  fill $pf-primary-faded
.pf-primary-bright
  color $pf-primary-bright
  fill $pf-primary-bright
.pf-primary
  color $pf-primary
  fill $pf-primary
.pf-primary-dark
  color $pf-primary-dark
  fill $pf-primary-dark

.pf-secondary-bright
  color $pf-secondary-bright
  fill $pf-secondary-bright
.pf-secondary
  color $pf-secondary
  fill $pf-secondary
.pf-secondary-dark
  color $pf-secondary-dark
  fill $pf-secondary-dark

.pf-white
  color $pf-white
  fill $pf-white
.pf-muted-faded
  color $pf-muted-faded
  fill $pf-muted-faded
.pf-muted-bright
  color $pf-muted-bright
  fill $pf-muted-bright
.pf-muted
  color $pf-muted
  fill $pf-muted
.pf-muted-dark
  color $pf-muted-dark
  fill $pf-muted-dark
.pf-dark
  color $pf-dark
  fill $pf-dark


// ----- BACKGROUNDS -----
.pf-bg-primary-bright
  background-color $pf-primary-bright
.pf-bg-primary
  background-color $pf-primary
.pf-bg-primary-dark
  background-color $pf-primary-dark

.pf-bg-secondary-bright
  background-color $pf-secondary-bright
.pf-bg-secondary
  background-color $pf-secondary
.pf-bg-secondary-muted
  background-color $pf-secondary-dark

.pf-bg-white
  background-color $pf-white
.pf-bg-muted-bright
  background-color $pf-muted-bright
.pf-bg-muted
  background-color $pf-muted
.pf-bg-muted-dark
  background-color $pf-muted-dark
.pf-bg-dark
  background-color $pf-dark