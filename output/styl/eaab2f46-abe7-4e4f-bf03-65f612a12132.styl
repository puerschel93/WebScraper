// app global css

/*
* 当前文件内的 样式 主要是对应 quasar 本身 样式的 覆写
*/

body
  font-size  12px
  min-width  1300px
  -moz-user-select  text
  -webkit-user-select  text
  -ms-user-select  text
  -khtml-user-select    text
  -o-user-select  text
  user-select    text
  font-family:  Microsoft yahei;

// 用户管理中全选按钮色调
.text-grey-8
  color var(--q-color-primary) !important

.q-checkbox--dense .q-checkbox__bg
    left: 4px;
    top: 2px;
    width: 14px;
    height: 14px;


/*用户管理黑名单切换*/
.q-toggle__thumb
  width: 20px;
  height: 20px;
  border: 10px solid;
  border-radius: 50%;
  border-color: #fff;
  // box-shadow: 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12);

.q-toggle--dark .q-toggle__inner--active
  color $secondary

// toggle 切换框色调
.q-toggle__inner--active
  color $secondary

.q-item--active
   color $secondary

.q-btn
  min-height 1em

.q-field--filled.q-field--rounded .q-field__control
  border-radius 4px;

.border-bottom-1px
  border-bottom 1px solid #E5EBF2

.border-top
  border-top 1px solid #242b38
.border-left
  border-left 1px solid #242b38
.border-bottom
  border-bottom 1px solid #242b38
.border-right
  border-right 1px solid #242b38

.border-1
  border 1px solid #00A997

.border-2
  border 1px solid #CFE0F4

.border-radius-4
  border-radius 4px

// q-tree 数 样式
.q-tree__node-header
  padding 0
  margin-top 0 

// 全局下拉框 input框右侧图标
.q-field__marginal
  font-size  14px
  color $panda-bg-3


// 表单框边框focus样式
.q-field__control
  color: $panda-bg-2
  // box-shadow 0 2px 4px 0 rgba(97,128,239,0.20)
// .q-field__control:hover
//   color: #00A997

.q-field--filled.q-field--focused .q-field__control
  color transparent!important

//  40 像素高度

.input-height-40px.q-field--dense .q-field__control,.input-height-40px.q-field--dense .q-field__marginal
  min-height  40px
   height  40px

.input-height-40px.q-field--auto-height.q-field--dense .q-field__control,.input-height-40px.q-field--auto-height.q-field--dense .q-field__native
  min-height  40px

.input-height-40px.q-field--filled.q-field--rounded .q-field__control
  height  40px

//  30 像素高度
.input-height-30px.q-field--dense .q-field__control,.input-height-30px.q-field--dense .q-field__marginal
  min-height  30px
  height  30px

.input-height-30px.q-field--auto-height.q-field--dense .q-field__control,.input-height-30px.q-field--auto-height.q-field--dense .q-field__native
  min-height  30px

.input-height-30px.q-field--filled.q-field--rounded .q-field__control
  height  30px

//  24 像素高度

.input-height-24px.q-field--dense .q-field__control,.input-height-24px.q-field--dense .q-field__marginal
  min-height  24px
  height  24px

.input-height-24px.q-field--auto-height.q-field--dense .q-field__control,.input-height-24px.q-field--auto-height.q-field--dense .q-field__native
  min-height  24px

.input-height-24px.q-field--filled.q-field--rounded .q-field__control
  height  24px

// 去除input默认的样式
.q-field--outlined .q-field__control:hover:before
  border-color $panda-bg-2
  // box-shadow: 0 0 0 2px rgba(24, 144, 255, 0.2)

.q-field--outlined.q-field--focused .q-field__control:after
  border-width 1px
  border-color: #40a9ff;
  box-shadow: 0 0 0 2px rgba(24, 144, 255, 0.2)

.q-field--outlined .q-field__control:after
  border-width 1px


// 表单框边框focus样式
.q-field__control
  color $panda-bg-2
  // box-shadow 0 2px 4px 0 rgba(97,128,239,0.20)
// 表单框边框focus样式
.q-field--filled.q-field--focused .q-field__control:before
  border 1px solid  $panda-bg-2

.input-append-btn  .q-field__control
  padding-right 0

.fullscreen{
  z-index: 999
}

.q-btn__wrapper:before
  box-shadow: none;














.q-field__native, .q-field__prefix, .q-field__suffix
  // color $panda-bg-3
  padding  0

.q-field--auto-height .q-field__native, .q-field--auto-height .q-field__prefix, .q-field--auto-height .q-field__suffix
  line-height  0px

// 全局下拉框 input框 内边距 背景颜色
//.q-field--filled .q-field__control
//  padding 0 5px
//  background $panda-field-grey
  // 内嵌搜索按钮输入框
.append-handle-btn-input  .q-field--filled .q-field__control
  padding 0 0 0 5px

// 表单框边框focus样式
.q-field--filled.q-field--focused .q-field__control:before
  border 1px solid var(--q-color-panda-bg-4)
  box-shadow 0 2px 4px 0 rgba(97,128,239,0.20)

// // 翻页器中样式
// .q-field--outlined.q-field--focused .q-field__control:after {
//   border-color: var(--q-color-panda-border-primary)
// }

// 表单focus下拉框效果去除
.q-field--filled.q-field--focused .q-field__control
  color transparent!important

.q-select__input
  min-height  12px
  line-height  12px

.q-select__input.q-placeholder
  color $panda-bg-7 !important

.q-field__native.q-placeholder
   color $panda-bg-7 !important


.q-select.q-select--with-input .q-field__control-container
  width  150px !important
  min-width  150px !important
  max-width  150px !important

.q-select.q-select--with-input .q-field__control-container   .q-select__input.q-placeholder
  max-width  50px !important

.q-field__append
  border-left 1px solid $panda-bg-3

.q-checkbox__inner
  width: 14px;
  min-width: 14px;
  height: 14px;
  padding: 0px;
  outline: 0;
  border-radius: 50%;
  color: #D9D9D9;

.q-checkbox__bg
  left: 0;
  top: 0;
  right: auto;
  bottom: 0;
  width: 1em;
  height: 1em;
  border: 1px solid currentColor;
  border-radius: 2px;
  transition: background 0.22s cubic-bezier(0, 0, 0.2, 1) 0ms;

.q-field__native, .q-field__prefix, .q-field__suffix
  line-height  1px
  font-size  12px
.q-table--dense .q-table th:first-child, .q-table--dense .q-table td:first-child
  padding-left  0px
.q-table--dense .q-table th, .q-table--dense .q-table td
  padding   0
.q-table__card
  box-shadow: none;
.q-checkbox__label
  padding-left: 6px;
  font-size: 14px;
  line-height: 20px;


.q-table--horizontal-separator thead, .q-table--horizontal-separator tbody tr td
  border-width 1px

.q-placeholder::-webkit-input-placeholder
  color  $panda-text-light

.q-placeholder::-moz-placeholder
  color  $panda-text-light

.q-placeholder::-moz-placeholder
 color $panda-text-light

.q-placeholder::-ms-input-placeholder
  color $panda-text-light

.q-radio__inner
  width: 25px;
  min-width: 25px;
  height: 25px;
  padding:0px;
  outline: 0;
  border-radius: 50%;
  // color: #fff;


.q-radio__bg
  left: 7px;
  top: 6px;
  width: 50%;
  height: 50%;

.q-radio__inner-circle
  top: 50%;
  left: 50%;
  border-width: 4px;
  color: #fff;

.q-radio__inner--active .q-radio__inner-circle
  transform: translate(-50%, -50%)
  background-color: #fff
  border-width: 3px;

.q-radio__inner--active  .q-radio__outer-circle
  color  $panda-color-blue

.q-checkbox__inner.q-checkbox__inner--active
  color  $panda-color-blue

.q-dialog__backdrop
  background: rgba(30,37,50,0.3);




  border-radius: 0px;
  border-radius: 0px;
  color:#fff;

/* alert框 */



.q-dialog__inner > .q-card > .q-card__actions .q-btn--rectangle
  min-width: 80px;
  min-height: 30px;

.q-dialog__inner > .q-card > .q-card__actions .q-btn--rectangle:first-child
  order  33

.alert-template
  margin-top 25px
.q-table thead, .q-table tr, .q-table th, .q-table td
  border-color $panda-table-border

.q-dialog__message
  opacity 1
.q-table--dense .q-table th:last-child, .q-table--dense .q-table td:last-child {
    padding-right: 0;
}

.q-btn__wrapper
  min-height 0
  padding: 0 2px;

//翻页器高度
.q-table__bottom
  padding 0

.q-table--dense .q-table thead tr
  height 40px
  box-sizing border-box

.q-table tbody td
  height 40px
  box-sizing border-box

.q-table th
  font-size 14px
  color #646F75
.q-table tbody td
  font-size 14px
  color rgba(0,0,0,0.65)

// 首页导航icon跟字体之间的间距
.q-item__section--avatar
  min-width: 40px;
.q-item
  padding 10px 20px
  min-height 30px
