@import 'mixins.styl'
body
	fullpage()
	z-index 10
	background-color #FFF
	color #444
	usefont()

.top-line
	position fixed 
	top 0
	left 0
	right 0
	height 8px
	background-color #444
	z-index 100

.main-title
	usefont()
	font-size 48px
	color #444
	margin 30px 0 10px 0
	text-align center
	.subtext
		margin-left 3px
		color #777
		font-size 14px
	.text
		width auto
		display inline-table
	.busy
		background-image url("assets/busy.gif")
		height 16px
		width 16px
		display inline-table
		position relative
		top -5px
		right -20px
		opacity 1
		transition opacity .3s ease-in-out
	.busy.hidden 
		opacity 0

.main-title.inleft
	text-align left 
	margin-left 20px
	.text
		margin-left 0px
.wrapper
	fullpage()
	z-index 20
	box-sizing border-box
	overflow hidden
	.top-right
		position fixed
		top 50px
		right 10px
	h2
		text-align center
		font-weight normal
		font-size 20px

.notice
	width 60%
	margin-left 20%
	margin-top 40px
	height auto
.notice.error
	box-sizing border-box
	padding 15px
	border-radius 4px
	border 1px red solid
.login-div
	margin-top 40px
	margin-left 20%
	margin-right 20%
	width 60%
	box-sizing border-box
	border-top 6px #EEE solid
	border-bottom 6px #EEE solid
	padding-bottom 30px
	h3.title 
		font-size 36px
		margin 30px 0 20px 0 
		usefont()
	input
		background none
		border none
		margin-top 15px
		display block
		text-align left
		usefont()
		&:focus
			outline none
	input[type='text'], input[type='password']
		padding 8px 10px 6px 10px
		border-left 6px #EEE solid
		font-size 26px
		color #444
		transition all .5s ease
		//border-bottom 1px #D6D6D6 solid
		&:focus
			outline none
			//border-bottom-color #33b5e5
			border-left-color #33b5e5
		&:focus:-webkit-input-placeholder
			color #666
	input[type='password']:-webkit-input-placeholder
		padding-left 20px

.img-holder
	background-color #33b5e5
	width 256px
	height 256px
	box-sizing border-box
	box-shadow 0px 0px 4px 0px rgba(0,0,0,0.1)
	margin-top 20px

.full-row
	width 100%
	height auto
	margin-top 30px
	margin-bottom 5px
.btn
	background none
	border none
	usefont()
	font-size 18px
	padding 10px 20px 12px 20px
	background-color #444
	color #FFF
	border-radius 3px
	transition all .3s ease-in-out
	cursor pointer
	&:hover
		background-color #555
	&:active
		background-color #3a3a3a
		box-shadow inset 0px 2px 6px 0px rgba(0,0,0,0.1)
.btn.disabled
	opacity 0.7
	background-color #666
	&:hover, &:active, &:focus
		background-color #666
		outline none
		box-shadow none

// Select Styles
select
	appearance(none)
	border none
	background none
	usefont()
	font-size 18px
	color #555
	padding 10px 20px 10px 10px
	display inline-block
	margin-right 50px
	position relative
	//border-bottom 1px #EEE solid
	border-left 6px #EEE solid
	transition all .3s ease-in-out
	cursor pointer
	option
		padding 6px 15px 8px 15px
		border none
		box-shadow none

	&:focus , &:active
		outline none
		border-left-color #33b5e5

select ~ input#branchname
	display inline-block
	margin-left 30px
	border-left 6px #EEE solid
	padding 10px
	font-size 22px 
	color #555
	
	&:focus , &:active
		outline none
		border-left-color #33b5e5
	

// Scrollbars
::-webkit-scrollbar{
	width 10px
	height 10px
	appearance(none)
}
::-webkit-scrollbar-track{
	background-color rgba(0,0,0,0.1) 
}
::-webkit-scrollbar-thumb{
	background-color rgba(0,0,0,0.2)
}
::-webkit-scrollbar-track:hover{
	background-color rgba(0,0,0,0.2)
}
::-webkit-scrollbar-thumb:hover{
	background-color rgba(0,0,0,0.2)
}


.left-pane, .center-pane, .right-pane
	position absolute
	top 0
	bottom 0
	display block
	height auto
	box-sizing border-box
	h4
		font-size 30px
		margin-top 27px
		font-weight normal
	ul
		list-style none
		margin 0
		padding 0
		li
			a
				text-decoration none
				color inherit
				transition all .3s ease
				&:hover, &:visited, &:focus, &:active
					color inherit
					text-decoration none
			color #333
			font-size 16px
			padding 8px 0px
			font-size 20px
			&:hover
				color #33b5e5
			&:active
				color darken(#33b5e5, 8%)

.left-pane
	left 0
	width 290px
.center-pane
	left 310px
	right 470px
	bottom initial
	height auto
	border 5px #555 solid
	border-radius 0px 0px 8px 8px
	border-top none
	padding 0px 20px
.right-pane
	right 0
	width 430px

textarea
	position absolute
	top 60px
	bottom 0
	padding 20px
	border none
	box-sizing border-box
	max-width 900px
	width 100%
	outline none
	margin 0 auto
	font-size 20px
	box-shadow none
	resize none
	line-height 1.6em
	display block
	color #BBB
	transition color .3s ease-in-out
	&:hover, &:focus, &:active
		color #444

#editor
	height 100%
	margin-top 40px
	.preview
		display none
.clearfix
	clearfix()
.f-left
	display block
	float left
.f-right 
	display block 
	float right
.btn#newPost
	margin-top 20px

ul.block 
	display block
	clear both
	margin-top 10px
	margin-bottom 20px

.options.onMobile
	display none

@import 'responsive.styl'