[data-scrolling="true"]
    .header
        top -100px
        transition .6s
[data-scrolling-mode="up"]
    .header
        top 0
        transition .6s
.header
    height 100px
    background-color rgba(0, 0, 0, .7)
    position: fixed
    width 100%
    left 0
    top 0
    transition .6s
    z-index 9
    // box-shadow: 0px 1px 2px 3px rgba(0, 0, 0, .7)
    a
        color: #cc0000
    &__wrapper
        display flex
        height: 100px
        align-items: center
        justify-content space-between
        h2
            opacity none
        .menu
            display flex
            &-item
                list-style none
                margin: 0 5px
                &:first-child
                    margin-left 0
                &:last-child
                    margin-right 0
    h1
        margin 0
        a
            color #fff
            text-decoration none
    .infor
        padding-top 120px
        margin 0 auto
        width 860px
        text-align center
        h2
            color #fff
            font-size 30px
        p
            color #fff
            font-weight lighter
            font-size 20px