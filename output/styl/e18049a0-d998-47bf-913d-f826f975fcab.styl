.mfp-bg
	background-color #131313
.mfp-fade.mfp-bg.mfp-ready
	opacity .96
.white-popup
	width 100%
	max-width 570px
	margin 0 auto
	position relative
	&.popup-modal
		padding 40px
		max-width 650px
		@media screen and (max-width 560px)
			padding 30px 10px
.mfp-close-btn-in .mfp-close
	opacity 1
	position absolute
	top -10px
	right 10px
	transition: all .2s ease
	font-size: 40px
	font-weight: 900
	color #fff
	&:active
		top 10px
	&:hover
		color red
.modal-title
	text-align center
	font-size: 30px
	font-weight: 900
	text-transform uppercase
	margin-bottom: 30px
.modal-text
	text-align center
	font-size: 25px
	font-weight: bold
	@media screen and (max-width 560px)
		font-size: 20px
.video-wrapper-modal
	margin-top: 30px
	max-width none
	@media screen and (max-width 560px)
		margin-top: 20px
	.modal-video
		border 0
		width 100%
		height: 100%
		top 0
