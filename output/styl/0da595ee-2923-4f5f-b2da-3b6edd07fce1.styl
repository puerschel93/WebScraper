.blog

  .summary
    background-color: c.black2
    min-height 600px
    padding 50px 0 0 0

    &.on
      display block
    &.off
      display none
    > .hero
      color: c.white1
      padding 80px 20px 120px 60px
      > .copy1
        max-width 800px
        margin auto
        text-transform uppercase
      > .copy2
        font f_h3
        max-width 900px
        text-align center
        letter-spacing 2px
        margin auto
    > .crumb
      background-color: c.white1
      padding 50px 50px 50px 170px
      font f_h3
      > .copy
        float left
        animation cellInX 0.2s 0s ease-in both
      > .close
        cursor pointer
        float right
        width 30px
        user-select none
        height 30px
        line-height 34px
        transition transform 0.1s linear
        &:hover
          transform rotate(90deg)
      &.on
        display block
      &.off
        display none
.blog
  .thumb

  > .entry
    &.on
      display block
      > .cover, > .body > .image > img
        display block
    &.off
      display none
      > .cover, > .body > .image > img
        display none

    > .cover
      height 600px
      position relative
      background-size cover
      background-repeat no-repeat
      background-position 50% 50%
    > .details
      padding 20px 0 0 0
      desktop()
      > .copy
        padding 100px 0 0 0 
        > .name
          font f_h3m
          padding 0 0 15px 0
        > .description
          font f_copyn
          line-height 24px
          padding 0 0 15px 0
          > a
            color: c.blue1
            text-decoration none

      > .date
        float left
        line-height 40px
      > .author, > .tags
        float left
        padding 0 0 0 20px
        line-height 40px
        > a
          display inline-block
          color: c.red2
          text-decoration none
        > .comma
          display inline-block
          margin 0 4px 0 -4px
          &:last-child
            display none
      > .shares
        float right
        position relative

        > .copy
          float left
          line-height 40px
        > .share
          float left
          width 35px
          height 35px
          background-color: c.black2
          border-radius 50%
          margin 0 0 0 10px
          cursor pointer
          &.on
            background-color: c.red2
          &.off
            background-color: c.black2
          &:hover
            background-color: c.red2
          > svg
            width 20px
            height 20px
            margin 7.5px 0 0 7.5px
            > g, > g path, > g > g > path
              fill: c.white1
        > .share_url
          position absolute
          top 40px
          right 0px
          &.on
            display block
          &.off
            display none
          > input
            font f_copy
            padding 5px 10px
            width 250px

.blog > .entry
   > .body
      desktop()
      padding 0 0 100px 0
      a
        color: c.blue2
        text-decoration none
      .yt
        width 100%
        height 55vh
      .space
        height 50px
      > .youtube
        width 800px
        height 450px
        margin auto
      > .image
        padding 50px 0
        width 100%
        &.pad_both
          padding 50px 0
        &.pad_top
          padding 50px 0 0 0 
        &.pad_bottom
          padding  0 0 50px 0 
        &.pad_none
          padding  0 0 0 0
        > img
          width inherit
        > .img
          //height 600px
          padding-top 60%
          background-size cover
          background-repeat no-repeat
          background-position 50% 50%
          &.double
            padding-top 120%
      > .copy
        padding 50px 0
        line-height 30px
        margin auto
        font f_copyn
        line-height 24px

      > .images
        > .image
          float left
          width 50%
          &.pad_both
            padding 50px 0
          &.pad_top
            padding 50px 0 0 0 
          &.pad_bottom
            padding  0 0 50px 0 
          &.pad_none
            padding  0 0 0 0
          &.pad_vert
            > .img
              padding-top 120%
          &.pad_vert2
            > .img
              padding-top 220%
          > .img
            //height 600px
            padding-top 60%
            background-size cover
            background-repeat no-repeat
            background-position 50% 50%

      > .imagecopy
        padding 50px
        desktop()
        &.pad_bottom
          padding 0 0 50px 0
        &.black
          background-color: c.black1
        &.nopadding
          padding 0px
        > .block.left
          float left
          width 50%
          height 100%
        > .block.right
          float right
          width 50%
          height 100%
        > .block
          height inherit
          > .image
            width 100%
            height inherit
            text-align center
            > img
              height inherit
            > .img
              height 100%
              background-size cover
              background-repeat no-repeat
              background-position 50% 50%
          &.copy
            display table
            > .copy
              line-height 30px
              max-width 600px
              padding 0 50px
              display table-cell
              vertical-align middle
              margin auto
              &.white
                color: c.white1
     
    > .nav
      font f_h5
      desktop()
      padding 0 0 100px 0
      clear both
      > .prev, > .next
        display block
        text-decoration none
        color: c.black1
      > .prev:hover, > .next:hover > .copy
        color: c.red2
      > .prev:hover > .arrow.left
        border-right: 10px solid c.red2
      > .next:hover > .arrow.right
        border-left: 10px solid c.red2
      > .prev
        float left
        > .copy
          display inline-block
        > .arrow.left
          margin 10px 10px 0
          display inline-block
          width 0
          height 0 
          border-top 10px solid transparent
          border-bottom 10px solid transparent
          border-right: 10px solid c.black1
      > .next
        float right
        > .copy
          display inline-block
        > .arrow.right
          margin 10px 0 0 10px
          display inline-block
          width 0
          height 0 
          border-top 10px solid transparent
          border-bottom 10px solid transparent
          border-left: 10px solid c.black1
    > .related
      > .title
        font f_h3
        text-align center
        padding 20px
        color: c.white1
        for key, entry in data.blog
          &.title_{entry.folder}
            background-color: c[entry.color]
    > .credits
      for key, entry in data.blog
        &.credits_{entry.folder} > .inner > .sections > .section > .title
          color: c[entry.color]
      > .inner
        desktop()
        padding 50px
        > .title
          font f_h2
        > .sections
          > .section
            float left
            width 33.33%
            > .title
              font f_h3
              color: orange
              margin 0 0 10px 0
            > .item, > a.item
              display block
              margin 0 0 10px 0
              text-decoration none
              color: c.black1

.blog > .entry, .blog > .summary, .about 
  font f_copyls
  color: c.black3
  > .fcontainer
    background-color white
    > .filters, > .fcontainer > .filters
      background-color: c.white1
      text-transform uppercase
      border-bottom: 2px solid c.white2
      //border-bottom: 2px solid c.blue6
      &.float
        top 0
        width 100%
        position fixed
        z-index 80
        //animation filters 0.1s ease-out
      > .inner
        desktop()
        > .title
          float left
          padding 20px 0 20px 0px
        > .filtermenu
          padding 0 50px 0 0
          margin auto
          text-align center
          > .filter
            position relative
            cursor pointer
            display inline-block
            padding 20px
            for key, entry in data.blog
              &.filter_{entry.folder}.active
                background-color: c[entry.color]
              &.filter_{entry.folder}:hover
                background-color: rgba(c[entry.color], 0.25)
 
.blog > .summary
  padding 0 0 0 0
  > .fcontainer
    height 60px
    background-color white
  > .filters, > .fcontainer > .filters
    > .inner
      max-width none
      > .title
        display none
      > .filtermenu
        > .filter
          transition background-color 0.1s linear, padding 0.2s linear
          &:hover
            background-color: rgba(c.white2, 0.5)
          &.on
            background-color: c.white2
            color: c.black1

@media all and (min-width: 1px) and (max-width: 1000px)
  .blog
    > .summary
      > .hero
        padding 120px 20px 80px 20px

    > .entry
      > .details
        padding 0 20px
        > .author
        > .tags
          float none
          clear both
          padding 0
        > .shares
          float none
          clear both
          padding 10px 0 0 0
