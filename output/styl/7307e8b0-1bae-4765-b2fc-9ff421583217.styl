.content__container
  width: 80%;
  margin 0 auto;
  margin-top: 50px;
.product
  &__info
    display: flex;
    justify-content: space-between;
    &__imgblock
      width: 35%;
      &__img
        width: 100%;
        border-radius 6px;
    &__desc
      width: 62%;
      &__header
        background-color #F9FAFC;
        display: flex;
        justify-content: space-between;
        height: 60px;
        align-items: center;
        &__heading
          font-size 22px;
          font-weight 700;
          line-height: 28px;
          padding-left: 20px;
        &__rating
          padding-right: 20px;
          color #CBCBCB;
      &__text
        margin-top: 15px;
        font-size 20px;
        line-height: 34px;
        color rgba(59,72,88,0.9);
      &__price
        display: flex;
        justify-content: space-between;
        margin-top: 140px;
        align-items: center;
        &__text
          color #FF4949;
          font-size 24px;
          line-height: 31px;
          font-weight 600;
        &__button
          &__btn
            padding 15px 100px;
            border 2px solid $mainColor;
            background-color #FFFFFF;
            border-radius 6px;
            font-size 18px;
            font-weight 600;
            line-height: 23px;
            color rgba(59,72,88,0.9);
            transition $transition;
          &__btn:hover
            background-color $mainColor;
            color #FFFFFF;
  &__desc
    margin-top: 50px;
    border-top 1px solid #ECECEC;
    &__text
      color rgba(59,72,88,0.9);
      font-size 20px;
      line-height: 38px;
      margin-top: 25px;