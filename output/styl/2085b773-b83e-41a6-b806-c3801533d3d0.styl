.hero
  background-color #f0efee

  &:after
    content ''
    width 969px
    height 727px
    background url('../images/sneaker.png') no-repeat 100% 100%
    top 40px
    left -50px
    z-index 10
    position absolute

  .container
    height 600px
    padding-right 140px
    display flex 
    flex-direction row-reverse
    align-items center
    position relative

.hero-block
  z-index 22
  &__cost
    color redColor
    font-family TruenoLt
    font-size 30px
  
  &__title
    color redColor
    font-family TruenoRoundBd
    font-size 70px

  &__subtitle
    color #ff7373
    font-family TruenoRoundBd
    font-size 50px

  &__text
    color #8a8784
    font-family TruenoLt
    font-size 16px  
    padding-bottom 37px
  
  &__button
    max-width 255px
    height 48px
    background-color #ff7373
    color #fff
    font-size 16px
    text-align center
    padding-top 10px
    cursor pointer
    
    &:hover
      box-shadow 0 10px 25px rgba(0,0,0,0.2)

.collection
  padding-top 50px

  .container
    display flex 
    justify-content space-between

.left-block
  background url('../images/sneaker-collection1.png') no-repeat center
  width 579px
  height 540px
  display flex
  justify-content center
  align-items center
  flex-direction column
  left 10px
  position relative
  margin-right 30px

  &:after
    content ''
    width 29px
    height 55px
    background url('../images/dataile.png') no-repeat 100% 100%
    top 226px
    left -19px
    position absolute  

  &__title
    color #ffffff
    font-family TruenoLt
    font-size 30px
    font-weight 400
    position relative
    line-height 30px
    text-align center

    &:after
      content ''
      width 32px
      height 48px
      background url('../images/small-logo.png') no-repeat center
      top 10px
      left -90px
      position absolute

  &__subtitle  
    color #4bd8cd
    font-family TruenoBd
    font-size 30px
    font-weight 400
    padding-bottom 339px

  &__button
    width 211px
    height 48px
    background-color #4bd8cd
    color #000000
    font-family TruenoBd
    font-size 16px
    font-weight 400
    line-height 26px
    border none
    cursor pointer
    
    &:hover
      box-shadow 0 20px 30px rgba(#4bd8cd,0.2)

.right-block
  display flex
  flex-wrap wrap
  max-width 547px
  position relative

  H3
    font-family TruenoLt
    font-size 30px
    font-weight 400
    line-height 30px
    text-transform none 
    margin 0px

  SPAN
    font-family TruenoBd
    font-size 30px
    font-weight 400
    line-height 40px


  &__item:nth-of-type(1)
    background url('../images/sneaker-collection2.png') no-repeat center
    width 547px
    height 277px
    display flex
    justify-content center
    align-items center
    flex-direction column
    padding-left 150px
    position relative
    top -22px

    H3 
      color #fff
      padding-bottom 0px

    SPAN 
      color #fff
      padding-bottom 30px

    BUTTON
      width 145px
      height 48px
      background-color redColor
      color #ffffff
      font-family TruenoBd
      font-size 16px
      font-weight 400
      line-height 26px
      border none
      cursor pointer
    
      &:hover
        box-shadow 0 10px 25px rgba(0,0,0,0.2)

  &__item:nth-of-type(2)
    width 547px
    display flex
    justify-content space-between
    align-items center
    margin-left: 9px;
    margin-top: 7px;

  &__elem:nth-of-type(1)
    background url('../images/sneaker-collection3.png') no-repeat center
    width 255px
    height 255px
    display flex
    justify-content center
    align-items center
    flex-direction column
    margin-right: 28px;

    H3 
      color #fff
      padding-top: 100px;
      padding-bottom 0px

    SPAN 
      color #ff7373

  &__elem:nth-of-type(2)
    background url('../images/sneaker-collection4.png') no-repeat center
    width 255px
    height 255px
    display flex
    justify-content center
    align-items center
    flex-direction column
  
    H3 
      color #6b7072
      padding-bottom 0px

    SPAN 
      color #fff
      padding-bottom: 100px;

.catalog
  padding-top 100px

.title
  display flex
  justify-content center
  color #bdb9b5
  font-family TruenoLt
  text-transform: uppercase;
  align-items center
  padding-bottom 50px

  &__item:not(:last-child)
    padding-right 30px

  &__item--active
    color redColor
    font-family TruenoBd

.catalog-block
  display flex 
  justify-content space-between
  flex-wrap wrap
  align-items center

.cart
  width 255px
  height 350px
  border 1px solid #e0dfde
  background-color #ffffff
  margin-bottom 30px
  position relative

  &:hover
      box-shadow 0 10px 25px rgba(0,0,0,0.2)
      cursor pointer

  &__cost
    color #8a8784
    font-family TruenoLt
    font-size 24px
    font-weight 400
    line-height 26px
    position absolute
    z-index 22
    top 27px
    left 30px

  &__cost--sale
    color #ff7373 

  &__cost-sale
    color #8a8784
    font-size 16px
    text-decoration line-through
    position absolute
    top 55px
    left 30px
  
  &__image
    width 200px
    height 200px
    margin 27px 24px 0px 28px

  &__text
    position absolute
    margin-left 29px
    bottom 30px
  
  &__gender
    color #8a8784
    font-family TruenoBd
    font-size 16px
    font-weight 400
    line-height 26px

  &__title
    font-family TruenoLt
  
  &__number
    color #bdb9b5
    font-family TruenoLt
    font-size 13px

  &__sale
    position absolute
    color #fff
    font-family TruenoBd
    font-size 16px
    font-weight 400
    line-height 26px
    width 61px
    height 28px
    background-color #ff7373
    top 23px
    right 0
    text-align center

.brand
  margin-top 100px
  .container
    max-width 1048px
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap

.reviews
  background url('../images/glenn-carstens-peters-203007.jpg.png') no-repeat 50%
  background-size: cover;
  margin-top 103px

.overlay
  background-color rgba(maroonColor, 0.9)
  
  &__text
    background-color rgba(#fff,0.1)
    color #ffffff
    font-family TruenoLt
    font-size 16px
    font-weight 400
    line-height 26px
    padding 50px
    text-align center
    position relative
    margin-top 50px

    &:before
      content ''
      position absolute
      border 20px solid transparent
      border-bottom 20px solid rgba(#fff,0.1)
      top -40px
      left 50%
      transform translateX(-50%)

  &__container
    padding-bottom 100px

.reviews-block
  display flex 
  max-width 520px
  text-align center
  margin 0 auto
  justify-content space-between
  padding-top 102px
  padding-right: 35px;

  &__photo
    border 2px solid #fff
    border-radius 60%

  &__item:nth-of-type(odd)
    opacity 0.3
  
  &__name
    color #ffffff
    font-family TruenoBd
    font-size 16px
    font-weight 400
    line-height 26px

.news
  margin-top 105px

  &__title
    text-align center
    color #623232
    font-family TruenoBd
    font-size 30px
    font-weight 400
    text-transform uppercase
    margin-bottom 50px

  .container
    display flex
    justify-content space-between

  &__item-one
    max-width 350px
    position relative
  
  &__item-two
    max-width 350px
    position relative
  
  &__item-three
    max-width 350px
    position relative
  
  &__text
    position absolute
    color #ffffff
    font-family TruenoLt
    font-size 16px
    font-weight 400
    line-height 26px
    bottom 30px
    left 30px
      
  &__date
    font-family TruenoBd

  &__count
    position relative
    font-size 13px
    color #ff7373
    left 30px
    
    &:hover
      text-decoration underline
      cursor pointer
      
    &:after
      position absolute
      content ''
      background url('../images/comments.png') no-repeat center 
      top 4px
      left -30px
      width 20px
      height 20px

.letter
  margin-top 100px
  background-color #ff7373

  .container
    height 200px
    display flex 
    justify-content space-between
    align-items center
    flex-wrap wrap

  &__question-block
    position relative
    left 90px

    &:after
      content ''
      position absolute
      width 60px
      height 42px
      background url('../images/letter.png') no-repeat center 
      top 15px
      left -90px

  &__titile
    color #ffffff
    font-family TruenoBd
    font-size 30px
    font-weight 400
    text-transform uppercase

  &__subtitle
    color #ffffff
    font-family TruenoLt
    font-size 16px
    font-weight 400
    line-height 26px
  
  &__button
    width 211px
    height 48px
    background-color #623232
    color #ffffff
    font-family TruenoBd
    font-size 16px
    font-weight 400
    line-height 26px
    text-transform uppercase
    border none

    &:hover
      box-shadow 0 10px 25px rgba(0,0,0,0.2)
      cursor pointer

+below(bg-breakpoint)
  .hero
    &:after
      opacity 0.3
      z-index 0
      
+below(lg-breakpoint)

  .left-block
    &:after
      display none
    &__title
      &:after
        display none
  
  .cart
    margin-right 10px
    
+below(md-breakpoint)

  .collection

    .container
      flex-wrap wrap
      justify-content center 
    
  .left-block
    margin-bottom 30px
  
  .catalog-block
    justify-content center

  .brand
    margin-top 50px
    .container
      justify-content center

    &__item
      margin-right 30px
      margin-bottom 30px
  
  .news
    .container
      flex-wrap wrap
      justify-content center
    
+below(sm-breakpoint)
  .hero
    .container
      padding 0 10px
  
  .hero-block
      
    &__title
      font-size 70px
  
  .overlay
    &__text
      padding 10px

  .letter
    .container
      justify-content center

    &__question-block
      flex-basis 100%
      left 40px
      max-width 250px
      margin-right 20px

      &:after
        left -70px

    &__titile
      font-size 20px
    
   
      

+below(xs-breakpoint)

  .right-block
    flex-wrap wrap

    &__item:nth-of-type(1)
      padding-left 0px
    
    &__item:nth-of-type(2)
      display flex
      flex-wrap wrap
    
    &__elem:nth-of-type(1)
      flex-basis 100%
      
    &__elem:nth-of-type(2)
      flex-basis 100%
      margin-top 30px
      margin-right 30px
  
  .reviews-block
    &__item:nth-child(odd)
      transform scale(0.8)