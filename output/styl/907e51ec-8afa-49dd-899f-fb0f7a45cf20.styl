.screen {
  .hide-file {
    position: absolute;
    z-index: -100;
    display: none;
  }
  .operation {
    position: relative;
    .edit-btn {
      width: 80px;
      height: 30px;
      border: 1px solid #1d94f5;
      color: #1d94f5;
      text-align: center;
      line-height: 30px;
      border-radius: 5px;
      cursor: pointer;
    }
    .edit-btn:hover {
      color: #ffffff;
      background: #1d94f5;
    }
    .negative-edit-btn {
      width: 80px;
      height: 30px;
      border: 1px solid #727272;
      color: #727272;
      text-align: center;
      line-height: 30px;
      border-radius: 5px;
    }
    .delete-btn {
      background: #f36f6d;
      color: #ffffff;
      cursor: pointer;
      width: 90px;
      height: 35px;
      text-align: center;
      line-height: 35px;
      border-radius: 5px;
      position: absolute;
      top: 0;
      right: 130px;
    }
    .save-btn {
      background: #1d94f5;
      color: #ffffff;
      cursor: pointer;
      width: 90px;
      height: 35px;
      text-align: center;
      line-height: 35px;
      border-radius: 5px;
      position: absolute;
      top: 0;
      right: 0;
    }
  }
  .content {
    margin-top: 20px;
    height: 450px;
    position: relative;
    .background-img {
      max-width: 100%;
      width: 100%;
      height: 450px;
      position: absolute;
    }
    .body {
      position: absolute;
      padding-left: 44px;
      width: 100%
      padding-right: 44px;
      .header {
        height: 40px;
        line-height: 40px;
        display: flex;
        margin-top: 20px;
        div {
          margin-left: 10px;
          color: #fff;
          border-radius: 4px;
          background: rgba(0,0,0,0.4);
          width: 100px;
          height: 22px;
          line-height: 22px;
          text-align: center;
          cursor: pointer;
        }
      }
      .content-container {
        display: flex;
        height: 350px;
        width: 90%;
        overflow-x: auto;
        overflow-y: hidden;
        .content {
          color: #FFFFFF;
          width: 200px;
          height: 238px;
          margin-right: 6%;
          min-width: 175px;
          .dndPlaceholder {
            display: none;
          }
          .title {
            font-size: 15px;
            display: flex;
            font-weight: bold;
            align-items: center;
            margin-bottom: 8px;
            .icon {
              display: inline-block;
              margin-right: 10px;
              width: 5px;
              height: 15px;
              -webkit-border-radius: 3px;
              -moz-border-radius: 3px;
              border-radius: 3px;
            }
          }
          .add {
            cursor: pointer;
          }
          .module {
            width: 175px;
            height: 235px;
            position: relative;
            img {
              height: 100%;
              -webkit-border-radius: 8px;
              -moz-border-radius: 8px;
              border-radius: 8px;
              width: 100%;
            }
            .shadow {
              width: 100%;
              height: 35%;
              border-bottom-right-radius: 8px;
              border-bottom-left-radius: 8px;
              bottom: 0;
              position: absolute;
              opacity: 0.9;
              .main-title {
                margin-left: 12px;
                font-size: 15px;
                margin-top: 14%;
                font-weight: bold;
              }
              .sub-head {
                margin-left: 12px;
                font-size: 12px;
                margin-bottom: 16px;
              }
            }
          }
          .module:hover {
            cursor: move;
          }
          .delete {
            display: flex;
            background: #343d3b;
            color: #FFFFFF;
            height: 25px;
            -webkit-border-radius: 6px;
            -moz-border-radius: 6px;
            border-radius: 6px;
            align-items: center;
            width: 50%;
            justify-content: center;
            margin-top: 10px;
            cursor: pointer;
            opacity: 0.8;
            img {
              margin-right: 4px;
            }
          }
        }
        .content:nth-child(odd) {
          .icon {
            background: rgba(0, 178, 239, 1);
          }
          .shadow {
            background-image: linear-gradient(to top,rgba(0, 178, 239, 1) 0%,rgba(0, 178, 239, 1) 50%,rgba(0, 178, 239, 0) 100%);
          }
        }
        .content:nth-child(even) {
          .icon {
            background: rgba(203, 0, 23, 1);
          }
          .shadow {
            background-image: linear-gradient(to top,rgba(203, 0, 23, 1) 0%,rgba(203, 0, 23, 1) 50%,rgba(203, 0, 23, 0) 100%);
          }
        }
      }
    }
  }
  .import-tofu-modal {
    .modal-content {
      width: 450px;
      .modal-header {
        .modal-title {
          font-size: 16px;
          color: #727272
        }
      }
      .modal-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        .form {
          .item {
            margin-bottom: 8px;
            .tofu-select-container {
              max-height: 120px;
              overflow-y: auto;
              background: #eee;
              border: 1px solid #ddd;
              border-bottom-left-radius: 8px;
              border-bottom-right-radius: 8px;
              position: absolute;
              width: 220px;
              div {
                height: 30px;
                width: 100%;
                padding-left: 10px;
                line-height: 30px;
              }
              div:hover {
                background: #3a92f1;
                color: #FFFFFF;
              }
            }
            .item-title {
              font-size: 12px;
              color: #000;
              margin-bottom: 5px;
            }
            input, select {
              width: 220px;
              height: 35px;
              border: 1px solid #ddd;
              padding-left: 10px;
              -webkit-border-radius: 5px;
              -moz-border-radius: 5px;
              border-radius: 5px;
              color: #7b7b7b;
              font-size: 12px;
            }
            .content-container {
              display: flex;
              .content-img-container {
                width: 74px;
                height: 90px;
                background: #ddd;
              }
              .select-btn {
                width: 70px;
                height: 30px;
                border: 1px solid #1d92f2;
                color: #1d92f2;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                line-height: 30px;
                text-align: center;
                cursor: pointer;
                margin-left: 16px;
                margin-top: 60px;
              }
              .select-btn:hover {
                background: #1d92f2
                color: #ffffff;
              }
            }
          }
          .item:first-child {
            margin-top: 20px;
          }
        }
        .save-btn {
          color: #ffffff;
          background: #1d92f2;
          border: 1px solid #1d92f2;
          height: 35px;
          line-height: 35px;
          width: 220px;
          text-align: center;
          cursor: pointer;
          -webkit-border-radius: 4px;
          -moz-border-radius: 4px;
          border-radius: 4px;
          margin-top: 10px;
          margin-bottom: 50px;
        }
        .save-btn:hover {
          background: rgba(23, 149, 248, 1);
        }
      }
    }
  }
  .upload-logo-modal {
    .modal-content {
      width: 500px;
      .modal-header {
        .modal-title {
          font-size: 16px;
          color: #727272
        }
      }
      .modal-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        .form {
          .item {
            margin-bottom: 8px;
            width: 220px;
            .item-title {
              font-size: 12px;
              color: #000;
              margin-bottom: 5px;
            }
            input, select {
              width: 220px;
              height: 35px;
              border: 1px solid #ddd;
              padding-left: 10px;
              -webkit-border-radius: 5px;
              -moz-border-radius: 5px;
              border-radius: 5px;
              color: #7b7b7b;
              font-size: 12px;
            }
            .content-container {
              display: flex;
              .content-img-container {
                width: 134px;
                height: 130px;
                background: #ddd;
              }
              .select-btn {
                width: 70px;
                height: 30px;
                border: 1px solid #1d92f2;
                color: #1d92f2;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                line-height: 30px;
                text-align: center;
                cursor: pointer;
                margin-left: 16px;
                margin-top: 100px;
              }
              .select-btn:hover {
                background: #1d92f2
                color: #ffffff;
              }
            }
          }
          .item:first-child {
            margin-top: 20px;
          }
        }
        .save-btn {
          color: #ffffff;
          background: #1d92f2;
          border: 1px solid #1d92f2;
          height: 35px;
          line-height: 35px;
          width: 220px;
          text-align: center;
          cursor: pointer;
          -webkit-border-radius: 4px;
          -moz-border-radius: 4px;
          border-radius: 4px;
          margin-top: 10px;
          margin-bottom: 30px;
        }
        .save-btn:hover {
          background: rgba(23, 149, 248, 1);
        }
      }
    }
  }
}