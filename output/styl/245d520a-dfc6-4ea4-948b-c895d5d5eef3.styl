html
  background $body-bg
body
  background-color $body-bg
.navbar
  background-color $navbar-bg
  .site-name
    font-size 1rem !important

a.button
    padding 12px 16px
    background-color $green-bright
    border-radius 4px
    text-decoration none
    font-family Montserrat, sans-serif
    font-weight 500
    color #fff
    text-align center
    margin-top 40px
    transition all 0.2s
    &hover
      background-color darken($green-bright, 15%)
      text-decoration none !important

a.header-anchor
  display none

section.content
  display flex
  align-items center
  img
    min-width 350px
  p
    display flex
    flex-flow column nowrap
    line-height 32px
    padding 16px