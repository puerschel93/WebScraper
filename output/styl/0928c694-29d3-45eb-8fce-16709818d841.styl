@media screen and (max-width: 840px)
	@import 'mobile/_post.styl'


.post_main_title
	text-align center
	color #c8c8c8
	background-color black
	font-size 22pt
	line-height 24pt
	font-family 'Panamatica Regular'
	text-transform uppercase
	padding-top 12px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #ff3333
	border-style solid
	box-sizing border-box

.post_main_date
	text-align center
	color #ff3333
	background-color #c8c8c8
	font-size 22pt
	line-height 24pt
	font-family 'Panamatica Regular'
	text-transform uppercase
	padding-top 12px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color black
	border-style solid
	box-sizing border-box

.post_cover
	width 100%
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	width 100%
	padding-top 40%
	position relative
	background-size cover
	background-position center
	background-repeat no-repeat


.post_body
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	background-color #ff3333
	padding-left 25px
	padding-right 25px
	.post_description
		padding-top 25px
		padding-bottom 25px
		box-sizing border-box
		font-size 14pt
		line-height 16pt
		font-family 'Panama Regular'
		color #c8c8c8
		max-width 800px
		margin 0 auto
		a
			font-family 'Pragmatica Book'
			color #00c641
			text-decoration none
			&:hover
				color black
		img
			width 100%
	.post_share
		max-width 800px
		margin 0 auto
		margin-top 10px
		padding-bottom 25px
		.share_title
			font-size 14pt
			line-height 16pt
			font-family 'Pragmatica Book'
		.share_buttons
			margin-top 10px
			.s_button
				display inline-block
				margin-right 25px
				cursor pointer
				&:hover
					opacity 0.7


.summary_title
	text-align center
	color #ff3333
	background-color black
	font-size 22pt
	line-height 24pt
	font-family 'Panamatica Regular'
	text-transform uppercase
	padding-top 12px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #00c641
	border-style solid
	box-sizing border-box


.summary_posts
	background-color #c8c8c8
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #ff3333
	border-style solid
	box-sizing border-box
	padding-left 15px
	padding-right 15px
	padding-top 15px
	.post_item
		display inline-block
		vertical-align top
		width 25%
		margin-bottom 20px
		color black
		text-decoration none
		.post_inner
			padding 10px
		.post_title
		.post_poster
			border-radius 8px
			box-shadow: 0 0 10px rgba(0,0,0,1);
		.post_poster
			width 100%
			padding-top 60%
			background-size cover
			background-position center
			background-repeat no-repeat
		.post_title
			width 100%
			color #c8c8c8
			background-color #ff3333
			font-family 'Panamatica Regular'
			text-transform uppercase
			font-size 22pt
			line-height 24pt
			text-align center
			padding-top 62px
			padding-bottom 58px
			hyphens auto
		.post_date
			margin-top 15px
			font-size 14pt
			line-height 16pt
			font-family 'Pragmatica Book'
		.post_s_title
			font-size 14pt
			line-height 16pt
			font-family 'Panama Regular'


