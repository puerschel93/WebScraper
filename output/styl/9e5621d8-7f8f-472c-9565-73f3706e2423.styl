@import "iconoss.styl";

@font-face {
font-family 'Proxima Nova'
font-style normal
font-weight normal
src local('Proxima Nova'), url('fonts/nova/Mark Simonson - Proxima Nova Regular.woff') format('woff')
}

blanco = #fff
fondo = #F0F0F0
texto = #656565
textoNaraja = #f30
html, body
	padding 0
	margin 0
	height 100%
	width 100%
	position absolute
body,li,ul,p,figure 
	padding 0
	margin 0
body
	font-size 14px
.contenedor 
	background-color fondo
	color texto
.header
	display block
	width 100%
	//height 90px
	height 3.33333em
	background-color #ccc
	//margin-bottom 0px
	position fixed
	top 0
	left 0
	z-index 99
	.menu_bar a 
		text-decoration none
	.icon-menu:before
		font-size 2.5em
		font-weight normal
		margin 5px
.nav
	display none
	position fixed
	overflow-y auto
	overflow-x hidden
	width 100%
	height 95%
	background-color orange
	margin 0 auto
	z-index 99
	top 3.3em
	//padding 0 5%
	.info
		margin 5px
		padding 10px

	.nav-list, .nav-menu
		display block
		float left
		width 100%
		font-size 1.8em
		padding 0
		margin 0
		li 
			list-style none
			width 100%
			height 50px
			padding 0
			line-height 1
			text-align left
			font-weight 400
			font-style normal
			//background-color blue
			//margin 5px
			padding 0 30px
			//padding 10px 30px
			padding-top 15px 
			a 
				text-decoration none
			span 
				margin-right 10px

		li:hover
			background-color red
	.nav-menu li a 
		color blanco
	.nav-menu
		background-color #3c4656
	.acerca
		width 95%
		min-height 50px
		display block
		clear both
		padding 30px 20px
		margin 0 auto
		
.section 
	position relative
	display block 
	width 100%
	min-height 800px
	margin 0 auto
	margin-top 50px 
	margin-bottom 5px 
	text-align center
	.articulo
		display inline-block
		text-align left
		width 100%
		min-width 200px
		//max-width 358px
		height 8.33333em
		margin .32em
		background-color blanco
		margin-bottom 10px
		overflow hidden
		position relative
		transition-property box-shadow 
		transition-duration 1s
		transition-delay 0.2s
		box-shadow 0px 0px 10px 0px rgba(0, 0, 0, 0.0)
		.imagen
			display block
			width 30%
			height 100%
			float left
			img 
				width 100%
				height 100%
		.contenido
			display block
			min-width 15%
			width 65%
			max-width 67%
			height 8.33333em
			padding 5px
			float left
			font-weight 700
			line-height 1.1
			letter-spacing normal
			overflow hidden
			position relative 
			.author
				margin-bottom 0.45em
				//text-transform uppercase
				.icon-user
					margin 5px
			.titulo
				min-width 70%
				max-width 100%
				font-size 1em
				//position static
				display block
				float left
				//height 100%
				
			.datos 
				padding 0
				margin 0
				display block
				width 100%
				height 30px
				position absolute
				left 0
				bottom 0
				z-index 2
				background-color #fff
				.fecha, .comentarios
					display block
					float left
				.fecha .icon-calendar
					margin 5px
				.comentarios
					float right
					position absolute
					right 0
					.icon-bubble
						margin-right 2px
						font-size 1em
						background-color blanco
		.tags
			min-width 80px
			height 20px
			//background-color red
			position absolute
			right 0
			top 0
			text-align center
			padding-top 5px
			box-shadow none	
			visibility hidden
			color blanco
	.articulo:hover
		transition-property box-shadow 
		transition-duration 1s
		transition-delay 0.2s
		box-shadow 0px 0px 10px 0px rgba(50, 50, 50, 0.52)
		.contenido
			.titulo
				transition-property color
				transition-duration 0.5s
				transition-delay 0.2s
				color textoNaraja
		.tags
			transition-property background-color
			transition-duration 0.5s
			transition-delay 0.2s
			background-color textoNaraja
			visibility visible
		
.pie 
	display block 
	width 100%
	height 3.33333em
	background-color #99FFCC
	margin 0 auto
	margin-top 5px 
	margin-bottom 5px
	clear both
	vertical-align bottom
 

