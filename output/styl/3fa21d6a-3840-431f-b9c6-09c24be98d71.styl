.catalog
	background-color #fff
	padding 0 3.75em 0

	&__content
		display flex
		justify-content center
		flex-wrap wrap

		+md-block()
			justify-content: space-between

	&__title
		font-size 1rem
		line-height 1.2
		font-family 'Inter'
		font-weight bold
		margin-bottom 1em

		+md-block()
			font-size 2rem
			margin-bottom 1.25em
	
	&__search
		display: block
		justify-content: space-between
		align-items: top
		padding: 1.25em 0

		+sm-block()
			display: flex
			
	
	&__search-input
		font-size: 0.875rem
		font-family: 'Inter'
		color: #C4C4C4
		width: 11em
		height: 2em
		border: 1px solid #f3f3f3
		border-radius: 0.625em
		outline: none
		padding-left: 1em

		+md-block()
			background: url(../img/svg/search.svg) no-repeat 1.125em 0.8em
			width: 15.625em
			height: 2.81em
			padding-left: 3.2em
	
	&__search-input::placeholder
		color: #C4C4C4
	
	&__search-input[type="search"]::-webkit-search-cancel-button
		display: none

	&__content-item
		position: relative
		padding 1.25em 1.875em 1.875em 2.125em
		border: 1px solid #f3f3f3
		border-radius: 2.5em
		width 16em
		margin-bottom: 2.5em

		+md-block()
			width: 10em
		
		+lg-block()
			width: 13.125em	

	&__content-item:nth-last-child(-n+4) {
		margin-bottom 1.25em
	}
	
	&__item-descr
		font-family 'Inter'
		font-size 0.875rem
		line-height 1.2
	
	&__item-price
		display flex
		align-items: center
		justify-content space-between
	
	&__item-add
		padding 0.625em
		border: 1px solid #f2f2f2
		border-radius: 8px
		cursor pointer
	
	&__item-added
		display none
		cursor pointer

	&__item-price-text
		font-size 0.6875rem
		font-family 'Inter'
		color #BDBDBD
		text-transform uppercase
		line-height 1.2
		font-weight 500
		margin-bottom: 0
	
	&__item-price-ruble
		font-size 0.875rem
		font-family 'Inter'
		line-height 1.2

	&__item-img
		max-width 100%
	
	&__item-like
		top: 1.875em
		left 1.875em
		position: absolute
