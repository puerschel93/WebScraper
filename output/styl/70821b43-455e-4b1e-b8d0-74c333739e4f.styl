	--fg-clr-0025: rgba($fgColor, .025)

	// Shadow ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::

	/* --shadow-ao-clr = Shadow ambient occlusion color */
	--shadow-ao-clr: rgba(#000, .2)
	--shadow-clr: rgba(#000, .2)
	--shadow-big-clr: rgba(#000, .2)
	--shadow-huge-clr: rgba(#000, .3)
	--shadow-0: 0 0 1px var(--shadow-ao-clr), 0 1px 2px var(--shadow-clr)
	--shadow-1: 0 0 1px var(--shadow-ao-clr), 0 2px 5px var(--shadow-clr)
	--shadow-2: 0 0 1px var(--shadow-ao-clr), 0 3px 10px var(--shadow-clr)
	--shadow-3: 0 0 1px var(--shadow-ao-clr), 0 6px 16px var(--shadow-clr)
	--shadow-4: 0 0 1px var(--shadow-ao-clr), 0 8px 20px var(--shadow-big-clr)
	--shadow-5: 0 0 2px var(--shadow-ao-clr), 0 10px 28px var(--shadow-big-clr)
	--shadow-6: 0 0 2px var(--shadow-ao-clr), 0 12px 36px var(--shadow-big-clr)
	--shadow-7: 0 0 2px var(--shadow-ao-clr), 0 14px 40px var(--shadow-huge-clr)
	--shadow-8: 0 0 2px var(--shadow-ao-clr), 0 20px 60px var(--shadow-huge-clr)
	--shadow-9: 0 0 3px var(--shadow-ao-clr), 0 30px 80px var(--shadow-huge-clr)

	// Border ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::

	--border-soft: var(--font-clr-01)
	--border-hard: var(--font-clr-025)
	--seperator-top: solid 1px var(--font-base-clr-01)
	--seperator-bot: none

	// Font Base :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::

