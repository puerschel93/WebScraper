.page-application
	.lt-header
		.menu
			background-image: url(../images/menu2.png)
	img 
		max-width: 100%
	.application-main
		padding: 119px 28px 60px;
		background: url('../images/application/1.png') no-repeat;
		background-size: 100% auto;
		box-sizing: border-box;
	.form
		background: #FFFFFF;
		border-radius: 10px;
		background-size: 100% auto;
		padding: 29px 23px;
		padding-bottom: 66px;
	.title
		font-size: 25px;
		font-family: Source Han Sans SC;
		font-weight: bold;
		color: #126153;
		line-height: 19px;
	.tip
		margin-top: 7px;
		margin-bottom: 28px;
		font-size: 12px;
		font-family: Source Han Sans SC;
		font-weight: bold;
		color: #126153;
		line-height: 16px;
	.form-item
		display: flex;
		height: 36px;
		padding-left: 13px;
		margin-bottom: 6px;
		border: 1px solid rgba(#206A5E, 0.6);
		box-sizing: border-box;
		.icon
			flex: 0 0 13px;
			font-size: 0;
			padding-top: 12px;
			padding-right: 3px;
		.form-input
			flex: 1 1 100%;
			font-size: 12px;
			line-height: 30px;
			.input
				width: 100%;
				height: 100%;
				border: none;
				padding: 0 10px;
				box-sizing: border-box;
				&:focus-visible
					outline: -webkit-focus-ring-color auto 0;
		.identifying
			flex: 0 0 60px;
			height: 100%;
			padding: 0 10px;
			text-align: center;
			color: #fff;
			font-size: 12px;
			line-height: 30px;
			background: #FFC000;
	.submit
		height: 40px;
		line-height: 40px;
		margin-top: 27px;
		font-size: 13px;
		color: #fff;
		text-align: center;
		background: #126153;
		border: 1px solid #206A5E;
	.agreement
		margin-top: 40px;
		fontScale(9);
		font-family: SimHei;
		font-weight: 400;
		color: #666666;
		line-height: 16px;
		span
			color: #126153;
			font-weight: bold;
