scrollWidth = 6px

.scroll
    overflow-x hidden
    overflow-y auto
    border 1px solid reds
    height 397px

::-webkit-scrollbar
    width                   scrollWidth
::-webkit-scrollbar
    height                  scrollWidth  
    background-color        transparent
::-webkit-scrollbar-track
    background-color        transparent
    
    
#settings
    position: absolute
    left:     0
    right:    0

.buttons
    position:      fixed
    bottom:        12px
    left:          0px
    right:         0px

.button-border
    drag()
    input-transition()
    pointer-events        all
    display               inline-block
    position              relative
    border-radius         4px
    padding               10px
    margin                0px
    margin-left           13px
    height                58px

.button
    nodrag()
    -webkit-transition-property: box-shadow, border  
    -webkit-transition-duration: 0.4s
    -webkit-transition-timing-function: ease-in-out
    box-sizing        border-box
    border-radius     2px
    position          static
    height            35px
    width             35px

.button-icon
    pointer-events  none
    position        absolute
    left            21px
    top             19px

#vault-border .button-icon
    left: 20px

.list
    position:       absolute
    padding-top:    13px
    padding-bottom: 10px
    padding-left:   0
    padding-right:  0
    top:            0
    left:           0
    right:          0
    bottom:         0
    overflow:       auto

.vault-item-border
    no-transition()
    box-sizing      border-box
    padding         5px
    position        relative
    pointer-events  all

.vault-arrow
    position        absolute
    left            15px
    top             12px

.vault-item
    nodrag()
    font-size       18px
    pointer-events  all
    text-align      left
    width           100%
    height          34px
    padding-left    41px
    
.vault-value
    box-sizing      border-box
    position        relative
    pointer-events  all
    left            50px
    width           296px
    max-width       296px
    min-height      10px
    text-align      left
    padding-left    8px
    padding-right   8px
    padding-top     4px
    padding-bottom  8px
    font-size       14px
    resize          none 
    overflow-x      auto 
    overflow-y      hidden

.vault-overlay 
    nodrag()
    box-sizing      border-box
    font-size       18px
    pointer-events  all
    position        absolute
    left            32px
    width           296px
    top             0px
    bottom          0px
    margin          5px
    text-align      left
    padding-left    8px
    padding-right   8px
    padding-top     0px
    padding-bottom  1px


.stash-item-border
    no-transition()
    padding   5px
    & .site
    & .lock    
    & .pattern
        position        absolute
        pointer-events  none
        top             7px
    & .site
        left       10px
    & .lock
        left       0
        right      0
        text-align  center
    & .pattern
        left       60%

.pref-item-border
    no-transition()
    padding   5px
    & .int
    & .shortcut
    & .bool
    & .pref    
        position        absolute
        pointer-events  none
        top             11px
    & .pref        
        top             13px
        left       20px
    & .int
    & .shortcut
    & .bool
        right      20px

.pref-item
    width          100%
    height         32px
    
.pref-overlay.shortcut
.pref-overlay.int
.pref-overlay 
    nodrag()
    box-sizing      border-box
    pointer-events  all
    position        absolute
    right           0
    top             0
    bottom          0
    width           40%
    margin          6px

.pref-overlay.shortcut
    cursor          cell    
    font-size       10px        

.pref-overlay.int
    cursor          text    
    text-align      right
    font-size       17px        
    
.stash-item
    width           100%
    height          24px
                
