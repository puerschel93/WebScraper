drag()
    -webkit-app-region  drag
nodrag()
    -webkit-app-region  no-drag

input-transition()
    -webkit-transition all 0.4s ease-in-out
ghost-transition()
    -webkit-transition: all 0.8s ease-in-out    
fast-transition()
    -webkit-transition: all 0.2s ease-in-out
bubble-transition()
    -webkit-transition:  all 0.5s ease-in-out    
no-transition()
    -webkit-transition: none

body
    margin              0px
    height              100%
    overflow            hidden
    drag()
    -webkit-user-select none

input 
textarea
    nodrag()
    outline             none
    
#password
#turtle
.button
.vault-item
.vault-arrow
.stash-item
.pref-item
    cursor              pointer
        
a
    text-decoration     none

.no-pointer
    pointer-events      none

.main-input
    input-transition()
    nodrag()
    border-radius       2px
    font-size           24px
    padding-left        6px
    padding-right       6px
    width               100%
    box-sizing          border-box
    text-align          center
    height              35px
    
#master
#site
#pattern
    padding-top         0px
    padding-bottom      3px
    
#master
    font-size       38px
    
.ghost
    ghost-transition()
    pointer-events  none
    position        absolute
    left            0
    right           0
    text-align      left
    font-size       24px
    top             12px
    padding-left    20px

.timeout-box
    pointer-events  none
    position        absolute
    top             23px
    left            20px
    right           20px
    
.timeout
    -webkit-transition all 0.3s linear
    pointer-events  none
    border-radius   2px
    height          9px
    position        absolute
        
#lock
#password-ghost
    fast-transition()
    
.lock    
#lock
    top             14px
    opacity         0    
    &.closed
    &.open
        opacity     1

.bool    
    top             14px
    opacity         0    
    &.bool-true
    &.bool-false
        opacity     1
        opacity     1

#floppy
    font-size       19px
    top             15px
    text-align      right
    padding-right   20px
    
