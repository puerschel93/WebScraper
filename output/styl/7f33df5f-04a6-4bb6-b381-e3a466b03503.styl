.border
    nodrag()
    input-transition()
    position        relative
    padding         10px
    margin-left     12px
    margin-right    12px
    box-sizing      border-box
    border-radius   4px

#password-border
#pattern-border
#master-border
#site-border
    height          55px      
    margin-bottom   12px

#turtle
    nodrag()
    -webkit-transition box-shadow 0.1s ease-in-out
    margin          12px
    width           340px
    height          260px
    background-size cover
    border          none
    border-radius   3px

#bubble
    bubble-transition()
    nodrag()
    position        absolute
    top             170px    
    right           27px
    &.ask
    &.say
        pointer-events  all
        opacity         1
    &.whisper
        pointer-events  all
        opacity         1 
    &.silent
        pointer-events  none
        opacity         0

#say-tri
    bubble-transition()
    position       absolute
    width          0
    height         0
    right          33px

#say-box
    bubble-transition()
    position          relative
    top               20px
    right             0
    left              0

#say
    bubble-transition()
    padding           14px
    max-height        46px
    min-width         90px
    overflow          hidden
    
.whisper #say
    padding           10px
    padding-right     14px
    
.silent #say
    font-size         1px
    
.open:hover
    cursor  pointer

