$color--black = #222
$color--blue = #5674b9
$color--purple = #8560a8
$color--turquoise = #02fa9c
$color--white = #fff

body
  background-image url('/img/body.jpg')
  background-attachment fixed

.hidden
  display block
  height 0
  width 0

.brand
  svg
    height auto
    max-width 100%
    padding 1em
    position relative
    margin-top 50%
    transform translateY(-50%)

  .stroke
  .fill
    transform translateY(20px)

.brand--1
  .stroke
    fill url(#gradient)

.brand--2
  .stroke
    fill none
  .fill
    fill url(#gradient)

.brand--3
  background $color--white
  .stroke
    fill url(#gradient)

.brand--4
  background $color--white
  .stroke
    fill none
  .fill
    fill url(#gradient)

.brand--5
  .stroke
    fill $color--white

.brand--6
  .stroke
    fill none
  .fill
    fill $color--white

.brand--7
  background $color--blue linear-gradient(-225deg, $color--purple 0, $color--blue 30%, $color--turquoise 100%)
  .stroke
    fill $color--white

.brand--8
  background $color--blue linear-gradient(-225deg, $color--purple 0, $color--blue 30%, $color--turquoise 100%)
  .stroke
    fill none
  .fill
    fill $color--white

.brand--9
  .stroke
    fill $color--white
  .fill
    fill url(#gradient)

.brand--10
  .stroke
    fill url(#gradient)
  .fill
    fill $color--white

.brand--11
  background $color--black
  .stroke
    fill $color--white
  .fill
    fill url(#gradient)

.brand--12
  background $color--black
  .stroke
    fill url(#gradient)
  .fill
    fill $color--white

.brand__container
  height 0
  overflow hidden
  padding-bottom 100%
  text-align center
