@import '../../../core/client/styles/vars.styl'
@import '../../../core/client/styles/mixins.styl'

.App
  background-image url('http://i.imgur.com/9wHVhck.jpg')
  //background-image url('http://i.imgur.com/yD5I5WH.jpg')
  //background-image url('http://i.imgur.com/ftY0903.jpg')
  //background-image url('http://i.imgur.com/DgIEr0a.jpg')
  //background-image url('http://wallpapercave.com/wp/JnBur5a.jpg')
  background-size cover
  height 100%
  display flex
  flex-direction column
  &.Blank
    justify-content center
    align-items center
    h1
      color #707070
      text-shadow 0 0 6px rgba(33,33,33,0.3)
      cursor default
      margin 0 auto -3px
      font-family sans-serif
      text-transform uppercase
      letter-spacing 12px
    input, button
      font-size 16px
      font-weight normal
      color #555
      display block
      margin 12px auto
    button
      border-color #777
      text-transform uppercase
      font-size 14px
      &:hover
        border-color #555
        color #333

.Spinner
  color rgba(255,255,255,0.5)
  text-shadow 0 0 6px rgba(33,33,33,0.5)
  position absolute
  top 50%
  left 50%
  width 256px
  height 256px
  margin-top -128px
  margin-left -128px

// tabs
.Tab

  // tab bar
  &Bar
    flex-shrink 0
    display flex
    background #888
    height 24px

  // tab
  &
    background #ddd
    flex-grow 1
    margin 0 3px
    display flex
    justify-content space-between
    align-items center
    cursor pointer
  &.Active
    font-weight bold
  &:hover, &Add:hover
    background #e0e0e0
  &Text
    padding 0 6px
  &Connected, &NotConnected
    width 12px
    height 12px
    border-radius 100%
    &:after
      color #777
      margin-left 15px
      line-height 11px
      text-transform uppercase
      letter-spacing -1px
      background white
      padding 3px 6px
      border-radius 3px
      white-space nowrap
  &NotConnected
    background #dd5555
    &:after
      content 'not connected'
    &:hover:after
      content 'connect'
  &Connected
    background #aadd55
    &:after
      content 'connected'
    &:hover:after
      content 'reconnect'
  &Close
    background none
    border none
    width 30px
    height 30px
    text-align center
    margin 0 3px 0 0
    color #777
    border-radius 24px
    &:hover
      background white

  // new tab button
  &Add
    flex-grow 0
    width 18px
    height 18px
    line-height 18px
    font-size 24px
    text-align center
    cursor pointer
    margin 3px 3px 3px 0
    background #aaa
    border-radius 24px

.MainView
  background-size  cover
  display flex
  flex-grow 1
  height 100%
  transform translateY(0)
  transition transform 0.2s

.Launcher
  flex-grow 1
  flex-shrink 0
  display flex
  flex-direction row
  color white
  line-height 24px
  padding 0 12px
  overflow visible

  > input[type=text]
    text-shadow 0 0 12px rgba(0,0,0,0.8)
    flex-grow   1
    background  none
    color       white
    border      none
    font-size   18px
    line-height 24px
    text-align  left
    &:focus
      outline none

  &_Helpers
    position absolute
    top 100%
    left 0
    right 0
    background rgba(50,50,50,1)

  &_Helper
    padding 0 6px
    font-size 14px

.Switcher
  position absolute
  left 0
  top 0
  bottom 0
  z-index 10
  width 200px

  overflow-x hidden
  background black
  flex-shrink 0
  display flex
  flex-direction column
  background rgba(0,0,0,0.5)
  background linear-gradient(to right, rgba(0,0,0,0.55) 0%, rgba(0,0,0,0.65) 100%)
  color white
  text-shadow 0 0 12px rgba(0,0,0,0.8)

  transition transform 0.2s
  &.Hidden
    transform translateX(-200px)
  &.Visible + .Workspace
    position relative
    transform translateX(200px)

  &_Frame
    padding 6px

.Workspace
  padding 6px 12px 12px 6px
  flex-grow 1
  display flex
  flex-wrap wrap
  justify-content center
  align-items stretch
  @media screen and (orientation:portrait)
    flex-direction column
  @media screen and (orientation:landscape)
    flex-direction row
  overflow hidden
  & > *
    flex-shrink 0
  &Toolbar
    background #ddd
    width 24px
    display flex
    flex-direction column-reverse

.Frame
  //box-shadow 0 0 6px black, 0 0 2px black
  color #f0f0f0
  display flex
  flex-direction column
  //border-top 1px solid #555
  //border-left 1px solid #555
  //border-bottom 1px solid #111
  //border-right 1px solid #111
  background rgba(0,0,0,0.5)
  transition background 0.2s
  max-width 100%
  max-height 100%
  margin 6px 0 0 6px
  border-bottom 1px solid rgba(255,255,255,0.1)
  box-shadow 0 3px 6px rgba(0,0,0,0.8)
  &:hover
    background rgba(0,0,0,0.7)
  &_Header
    width 100%
    height 42px
    display flex
    align-items center
    flex-shrink 0
    padding 0 12px
    color #ddd
    z-index 10
    font-size 12px
    justify-content space-between
    .FrameWithError &
      background #c0392b
    //.Frame[data-type="file"] &
      //opacity 0
      //margin-bottom -34px
      //transition background 0.2s, opacity 0.2s
    //.Frame[data-type="file"]:hover &
      //opacity 1
  &_Section
    padding 3px
  &_Title, &_Address
    padding 0 3px
    margin 0
    font-weight bold
  &_Address
    flex-grow 1
    color #fff
    display inline-block
    background none
    border none
    padding 9px 3px 8px
    margin-left 3px
    border-bottom 1px dotted #000
    transition background 0.2s
    &:hover, &:focus
      background #111
    &:focus
      outline none
      border-bottom 1px solid #aaa
  &_Error
    flex-shrink 0
    display flex
    justify-content space-between
    align-items center
    background #e74c3c
    color white
    padding 0 6px
    line-height 18px
    &_Message
      font-weight bold
    &_Stack
      font-family monospace
      background rgba(0,0,0,0.5)
      white-space pre
      overflow auto
      padding 6px
      margin-bottom 6px
      line-height 14px
    &_Close
      font-size 24px
      margin-right -3px
      padding 4px 2px
      cursor pointer
      &:hover
        background rgba(255,255,255,0.1)
  &_Status
    display none
    margin 0 6px
    background #ddd
    padding 3px 6px
  &_Close
    font-size 30px
    opacity 0.5
    cursor pointer
    transition opacity 0.2s, text-shadow 0.2s
    padding-left 9px
    margin-left 9px
    &:hover
      opacity 1
      color #eee
      text-shadow 0 0 3px white, 0 0 3px white
  &Body
    color #f0f0f0
    display flex
    flex-direction column
    overflow auto
    flex-grow 1
    .Frame[data-type="directory"] &
      flex-direction row
    > table
      background white
    > iframe
      border none
      position absolute
      top 0
      left 0
      width 100%
      height 100%
  &_Dragger
    &_Left, &_Right, &_Top, &_Bottom
      position absolute
    &_Left, &_Right
      top 0
      bottom 0
      width 12px
      cursor ew-resize
    &_Left
      right 100%
    &_Right
      left 100%
    &_Top, &_Bottom
      left 0
      right 0
      height 12px
      cursor ns-resize
    &_Bottom
      top 100%
    &_Top
      bottom 100%

.Blank
  background rgba(255,255,255,0.9)
  h1
    font-family serif
    font-style italic
    font-size 6em
    margin 0

.Sidebar
  display flex
  flex-direction column
  background rgba(0,0,0,0.5)
  background linear-gradient(to left, rgba(0,0,0,0.65) 0%, rgba(0,0,0,0.55) 100%)
  color #ddd
  font-family sans
  box-shadow 3px 0 6px rgba(30,30,30,0.4)
  text-shadow 0 0 9px rgba(0,0,0,0.8)
  overflow auto
  border-right 1px solid rgba(180,180,180,0.1)

  &Collapsed
    background linear-gradient(to left, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.4) 100%)
    padding-left 12px
    cursor pointer
    &:hover
      background linear-gradient(to left, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.5) 100%)

  .Highlight
    background linear-gradient(to right, rgba(255,255,255,0.2) 33%, transparent 100%);
  &_Section
    &_Header
      margin 0 1px
      cursor normal
      line-height 18px
      font-weight bold
      text-transform uppercase
      letter-spacing 2px
      font-size 0.9em
      padding 6px 6px
      text-align center
      font-size 1.2em
      font-weight normal
  &_Button
    cursor pointer
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    padding 3px 6px
    i
      font-size 20px
      width 24px
      text-align center
      vertical-align middle
    &:hover
      background rgba(33,33,33,0.5)

.Taskbar
  height 48px
  display flex
  flex-direction row
  justify-content space-between
  //background rgba(0,0,0,0.5)
  //border-bottom 1px solid rgba(255,255,255,0.1)
  //box-shadow 0 3px 6px rgba(0,0,0,0.8)
  &_Group
    &:first-child > :first-child,
    &:last-child > :last-child
      padding-left 12px
      padding-right 12px
    display flex
    flex-direction row
  &_Button, &_Clock
    background none
    overflow hidden
    cursor pointer
    &>i
      font-size 24px
      vertical-align middle
    &:hover
      color #ccaa26
      box-shadow none
      text-shadow none
    &:active
      color white
    &:focus
      outline none
      text-shadow 0 -1px 0 #555
    &.active
      color #ccaa26
      background rgba(255,255,255,0.2)
      &:hover
        color white
  &_Clock
    font-size 14px
    line-height 18px
    width 120px
  &_MainMenu
    position absolute
    left 0
    top 46px
    width 400px
    background rgba(0,0,0,0.6)
    z-index 1
    &:after
      content ''
      position absolute
      left 100%
      top 0
      bottom 0
      width 6px
      background linear-gradient(to right, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0) 100%)
    &_Item
      padding 6px 12px
      color white
      font-size 1.4em
      line-height 24px
      cursor pointer
      &:hover
        color #ccaa26
        background #181818
        &>strong
          color #eecc48
  &_PluginManager
    position absolute
    right 0
    top 46px
    width 400px
    background rgba(0,0,0,0.6)
    z-index 1
    padding 6px 3px
    font-size 1.2em
    &_Item
      color white
      padding 0 6px
      &>:first-child
        text-align left
        font-weight bold
      &_Status
        background rgba(255,255,255,0.1)
        margin 3px 6px
        text-align center
