.c-lounge__detail
  clearfix()
  max-width 1024px
  margin 0 auto 75px
  position relative
  &--slider
    position absolute
    left 0
    top 0
    z-index 2
    width 50%
    img 
      display block
      width 100%
  .owl
    &-carousel
      width 100%
    &-pagination
      position absolute
      right 5px
      bottom 5px
    &-prev
      position absolute
      top 45%
      left 10px
      line-height 18px
      &:before
        content "\e900"
        font-size 30px
        position relative
        top 10px
        left -3px
        color white
      &:hover
        &:before
          color black
    &-next
      position absolute
      top 45%
      right 10px
      line-height 18px
      &:before
        content "\e905"
        font-size 30px
        position relative
        top 10px
        left -3px
        color white
      &:hover
        &:before
          color black
    &-theme
      .owl-controls
        .owl-buttons
          div
            background-color black
            width 38px
            height 38px
            border-radius 0
            opacity 1
            padding 0
            overflow hidden
            font-family 'icomoon' !important
            transition background-color .8s, color .8s
            &:hover
              background-color $col-gold
        .owl-page
          span
            background-color white
            opacity .7    
  &--img
    position relative
  &--text
    width calc(50% + 20px)
    float right
  &--title
    padding 10px 0px 0px 60px
    h2
      color black
      font-family $font-kh-68
      font-size 80px
      line-height 1em
      text-align left
      text-transform uppercase
      margin-top 0
      margin-bottom 0
    .top-line
      clearfix()
      hr
        margin 20px 0
        float left
        width 20px
        border 1px solid black
  &--black
    width 100%
    background-color black
    padding 20px 0
    margin-top 20px
    .top-line
      hr
        margin 10px auto 0px
        width 20px
        border 1px solid $col-gold
    p
      font-size 16px
      text-align left
      color white
      line-height 2em
      padding 20px 60px
      margin-bottom 0
  &--food
    width calc(50% - 120px)
    float left
    padding-top 100px
    h2
      color black
      font-family $font-kh-68
      font-size 80px
      line-height 1em
      text-align right
      text-transform uppercase
      margin-top 0
      margin-bottom 0
    p
      font-size 16px
      text-align right
      line-height 2em
      margin-bottom 0
    .top-line
      clearfix()
      hr
        margin 20px 0
        float right
        width 20px
        border 1px solid black
    &--imgs
      clearfix()
      width calc(50% + 80px)
      float right
      position relative
      .bg--shadow
        top 400px
      img 
        display block
        width 100%
        position relative
        top 400px
      .c-lounge__detail--food--img
        &--1
          float left
          position relative
          overflow hidden
          width 60%
          &:hover
            z-index 5
        &--2
          width 25%
          float right
          position relative
          overflow hidden
          margin-right 7%
          margin-top 10%
        &--3
          width 25%
          float left
          position absolute
          bottom 0
          overflow hidden
        &--4
          width 60%
          float right
          position relative
          margin-top -15%
          overflow hidden
          z-index 3
          .bg--shadow
            z-index 4
      &.active
        img,
        .bg--shadow
          top 0
        .c-lounge__detail--food--img
          &--1,
          &--2,
          &--3,
          &--4
            &:hover
              .bg--shadow
                opacity 0
                z-index -1
              img
                transform scale(1.1,1.1)
              img,
              .bg--shadow
                transition top 1s ease, opacity 1s ease, z-index 1s ease, transform ease 1s
          &--1
            img,
            .bg--shadow
              transition top 1s ease, opacity 1s ease, z-index 1s ease, transform ease 1s
          &--2
            img,
            .bg--shadow
              transition top 1s ease .5s, opacity 1s ease, z-index 1s ease, transform ease 1s
          &--3
            img,
            .bg--shadow
              transition top 1s ease 1s, opacity 1s ease, z-index 1s ease, transform ease 1s
          &--4
            img,
            .bg--shadow
              transition top 1s ease 1.5s, opacity 1s ease, z-index 1s ease, transform ease 1s
  
  .img-background
    height 25vw
    max-height 340px
    background-size cover
    background-position 50%
    background-repeat no-repeat
@media $medium
  .c-lounge__detail
    &--title
      h2
        font-size 48px
    &--black
      p
        line-height 1.5em
    &--food
      padding-top 20px
      h2
        font-size 48px
      p
        line-height 1.5em
    .img-background
      height 30vw
@media $small
  .c-lounge__detail
    margin-bottom 25px
    &--slider
      position relative
      padding-top 100px
      width 100%
    &--text
      width 100%
      position static
    &--title
      position absolute
      top -30px
      padding 0
      width 100%
      h2
        font-size 48px
        text-align center
      .top-line
        hr
          float none
          margin 20px auto
    &--black
      width 85%
      margin 0 auto
      position relative
      top -30px
      z-index 2
      p
        text-align center
        padding 20px 30px 0
    &--food
      width 100%
      float none
      padding-top 0px
      h2
        font-size 48px
        text-align center
      .top-line
        hr
          float none
          margin 20px auto
      .top-line:last-child
        display none
      p
        line-height 2em
        text-align center
        padding 0 30px 20px
      &--imgs
        clearfix()
        width 100%
        position static
        margin-bottom 40px
        .c-lounge__detail--food--img
          &--1,
          &--2,
          &--3,
          &--4,
            position static
            width 49%
            height 49vw
            margin 0
            position relative
            float left
            overflow hidden
            img
              width auto
              min-width 100%
              height 100%
              min-height 55vmin
              margin 0
              position static
          &--1
            margin-right 1%
            margin-bottom 1%
          &--2
            margin-bottom 1%
          &--3
            margin-right 1%
              
    .owl
      &-prev
        left 0
        &:before
          color black
      &-next
        right 0
        &:before
          color black
      &-theme
        .owl-controls
          .owl-buttons
            div
              background-color $col-gold
      &-pagination
        display block
        width 100%
        bottom 30px
        
    .img-background
      height 60vw
html:lang(zh-CN)
  .c-lounge__detail
    &--title
      h2
        font-weight bold
        line-height 1em
        font-family $font-zh
        font-size 54px
        
    &--food
      h2
        font-weight bold
        line-height 1em
        font-family $font-zh
        font-size 54px
          
        
@media $medium
  html:lang(zh-CN)
    .c-lounge__detail
      &--title
        h2
          font-size 48px
          
      &--food
        h2
          font-size 48px

@media $small
  html:lang(zh-CN)
    .c-lounge__detail
      &--title
        h2
          font-size 40px
      &--food
        h2
          font-size 40px
   



