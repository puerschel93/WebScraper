/* Import CSS snippets */
@import '_snippets'

/* Import color variables */
@import '_variables'

.properties-container
	position relative
	height 100%

	.food-local-view-icon
		float:right;

	.properties-body
		padding 0 30px 0 30px
		position absolute
		width 100%
		top 0
		bottom 55px
		overflow auto
		@media(max-width: 800px)
			padding 30px
			position relative

		hr
			border none
			border-bottom #e1e1e1 1px solid

		.property
			margin-bottom 50px

			h3
				color dark-font-color
				font-size 20px
				padding-bottom 15px

			.input-wrapper
				display block
				margin-bottom 0px
				min-height 45px
				padding-left 0px

				label
					display inline-block
					font-size 13px
					line-height 45px
					margin-right 20px
					min-width 120px

				input, select, textarea
					border 1px solid #e1e1e1
					border-radius 4px

				input
					outline 0
					padding 10px 12px
					width 200px

				input[type="checkbox"]
					width auto

				input[type="range"]
					padding 0

				select
					height 36px
					line-height 45px
					outline 0
					width 220px

				textarea
					width 320px
					outline 0
					padding 8px 10px

		.property:last-child
			margin-bottom 0px

	.properties-footer
		background #fff
		border-top #e1e1e1 1px solid
		bottom 0
		padding 5px 15px
		position absolute
		width 100%
		z-index 2
		@media(max-width: 800px)
			position relative !important
			width auto

/* RTL Styles */

html[dir="rtl"]

	.properties-container
		.properties-body
			.property
				.input-wrapper
					padding-right 0px

					label
						margin-left 20px
						margin-right auto

					&.overridable
						input
							margin-left 10px
							margin-right auto
						.override-button
							margin-left 10px
							margin-right auto
							&.overriding
								color #CCC

					.override-button
						margin-left 10px
						margin-right auto
