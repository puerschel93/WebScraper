// Common rules

.right
	float right

// Basics
body
	color #2c2c2c
	font 300 16px Source Sans Pro, sans-serif
a, small a
	text-decoration none
	color c_color
	&.strong
		font-weight 700
	&:hover
		border-bottom dashed 1px c_color
.comment > a:hover, .comment-artist > a:hover, .message > a:hover
	border-bottom none

// Header

.header
	position relative
	height 120px
	margin 30px 0 0 0
	h1
		position absolute
		width 261px
		height 155px
		left 0
		top -3px
		text-indent 100%
		white-space nowrap
		overflow hidden
		background url(logo_url) 0 0 no-repeat
	.userbox
		display table
		position absolute
		top 0
		right 0
		overflow hidden
		text-align right
		> a
			display inline-block
			margin-left 10px
			&:hover
				border none
		div
			display table-cell
			vertical-align middle
		span
			color #8b8b8b
			margin 0 7px 0 8px
	nav
		position absolute
		bottom 15px
		right 0
		ul li
			display inline
			margin-right 10px
			font-size 22px
			a
				color #2c2c2c
			&.active a
				font-weight 700
				color c_color
			&:before
				content "â€¢"
				margin-right 10px
				color #8b8b8b
			&:first-child:before
				content ""
				margin-right 0

// DASHBOARD

.content
	margin-top 40px
	h2
		font-size 38px
		color #2c2c2c
		margin-bottom 8px
		.icon
			relative(-4px,0,0,0)
			font 25px entypo
			color c_color
		&.clickable:hover
			cursor pointer
	h3
		font-size 24px
		font-weight 600
		color #2c2c2c
		margin-bottom 7px

	// Galery

	.gallery
		h2 .icon
			margin-left 3px
		.item
			width 220px
			margin-bottom 25px
		header.item
			margin-bottom 20px
			width 220px
			.categories li, .category_items li
				width 100px
				display inline-block
				font-weight 300
			.categories
				font-size 19px
				margin-bottom 4px
				a.active
					font-weight 700
			.category_items
				a.active
					font-weight 600
			.theme
				display none

	// Feed

	.feed
		h2 .icon
			margin-right 2px
		overflow hidden
		.message
			display table
			// overflow hidden
			margin-bottom 14px
			font-size 15px
			font-weight 300
			> a
				display inline-block
				margin-right 10px
			p
				display table-cell
				vertical-align middle
				span
					font-weight 400
		.announcement
			margin-bottom 12px
			font-size 15px
			font-weight 300
			min-height 35px
			p
				&:before
					margin-right 6px
					padding-top 8px
					float left
					font-family 'entypo'
					content "\e001"
					font-size 22px
					color c_color

// ARTWORK

.content
	h2
		font-size 38px
		color #2c2c2c
		margin 0 0 8px 0
		&.process
			font-size 32px
		span
			font-size 17px
			font-weight 300
			a
				font-size 26px
				margin-left 6px
			&:first-child
				font-size 30px
	.artwork
		position relative
		> img
			width 100%
		a
			font-size 22px
		// process step
		.step_number
			display table
			width 70px
			height 70px
			position absolute
			text-align center
			top 15px
			left 15px
			border-radius 50%
			background rgba(255,255,255,0.7)
			p
				display table-cell
				vertical-align middle
				font-size 45px
				font-weight 700
				relative(-1px,0,0,3px)
				color rgba(0,0,0,0.6)
	.description
		span
			float left
			padding-right 5px
			font-size 32px
			font-weight 700
			margin-right 2px
	.discussion
		.comment
			position relative
			width 100%
			display table
			margin-bottom 14px
			font-size 15px
			font-weight 300
			> a
				// display inline-block
				float right
				margin-left 10px
			p
				display table-cell
				vertical-align middle
			&:first-child
				p
					font-size 18px
			&.artist
				> a
					float left
					margin 0 10px 0 0
				p
					width 308px
					text-align left
			&.add
				textarea
					width 65%
					background white
					padding 4px 6px
					font 300 15px Source Sans Pro, sans-serif
					// margin-right 40px
					border solid 3px c_color
					resize vertical
				.triangle
					position absolute
					top 26px
					right 93px
					border-top 20px solid transparent
					border-bottom 20px solid transparent
					border-left 30px solid c_color
					&:after
						position absolute
						top -20px
						left -35px
						content ""
						border-top 20px solid transparent
						border-bottom 20px solid transparent
						border-left 30px solid white
				> a
					margin 0
					relative(5px,0,0,0)
				span
					display block
				.button
					background c_color
					color white
					padding 7px 10px
					font-weight 600
					font-size 17px
					&:hover
						padding 4px 7px
						background white
						color c_color
						border solid 3px c_color
			&.artist.add
				textarea
					float right
					width 65%
					background white
					padding 4px 6px
					font 300 15px Source Sans Pro, sans-serif
					border solid 3px c_color
					resize vertical
				.artist_triangle
					position absolute
					top 26px
					left 93px
					border-left none
					border-top 20px solid transparent
					border-bottom 20px solid transparent
					border-right 30px solid c_color
					&:after
						position absolute
						top -20px
						left 5px
						content ""
						border-top 20px solid transparent
						border-bottom 20px solid transparent
						border-right 30px solid white
				span
					display block
					float right
					relative(3px,0,0,0)

// PEOPLE

.people
	> a
		font-size 21px
		margin-right 10px
		&.active
			font-weight 600
	.listing
		padding-top 15px
	.person
		display table
		float left
		width 30%
		margin-bottom 15px
		> a
			float left
			margin-right 15px
			&:hover
				border-bottom none
		div
			width 70%
			display table-cell
			vertical-align middle
			text-align left
			a
				font-size 22px
				font-weight 700
			span
				display block
				color c_black
				font-size 14


// ABOUT

.about
	p
		margin-bottom 10px
	img
		width 100%
		margin-bottom 10px
	iframe
		width 100%
// Footer

.footer
	padding 20px 0
	.prototype_reset
		color #AAA
		font-weight 300

// Media Queries

// Smaller than standard 960 (devices and browsers)

// /* Tablet Portrait size to standard 960 (devices and browsers) */
@media only screen and (min-width: 768px) and (max-width: 959px)
	.container .content .gallery
		width 460px
	.container .content .feed
		width 268px
	.artist_triangle, .triangle
		display none
	.people .person
		width 45%
		margin-bottom 20px
// /* All Mobile Sizes (devices and browser) */
// @media only screen and (max-width: 767px)

//  Mobile Landscape Size to Tablet Portrait (devices and browsers)
@media only screen and (min-width: 480px) and (max-width: 767px)
	.header
		> a
			width 150px
			height 89px
			top 10px
			h1
				background url(small_logo_url) 0 0 no-repeat
		nav
			right auto
			left 0
			bottom 0
		.userbox
			top 17px
	.content .gallery
		.item
			width 420px
	.artwork
		margin-bottom 20px
	.people .person
		width 100%
		margin-bottom 20px
		div
			width 80%

// /* Mobile Portrait Size to Mobile Landscape Size (devices and browsers) */
@media only screen and (max-width: 479px)
	.header
		height auto
		> a h1
			position relative
			width 150px
			height 89px
			margin 0 auto
			margin 20px auto 10px auto
			background url(small_logo_url) 0 0 no-repeat
		nav
			position relative
			margin 0 auto
			text-align center
		.userbox
			position relative
			text-align center
			margin 0 auto
			border-top dashed 1px c_color
			padding-top 15px
			> div
				display block
			> a
				display none
	.content .gallery
		.item
			width 300px
	.people .person
		width 100%
		margin-bottom 20px
			div
			width 80%

.isotope .isotope-item {
  /* change duration value to whatever you like */
  -webkit-transition-duration: 0.8s;
     -moz-transition-duration: 0.8s;
      -ms-transition-duration: 0.8s;
       -o-transition-duration: 0.8s;
          transition-duration: 0.8s;
}

.isotope {
  -webkit-transition-property: height, width;
     -moz-transition-property: height, width;
      -ms-transition-property: height, width;
       -o-transition-property: height, width;
          transition-property: height, width;
}

.isotope .isotope-item {
  -webkit-transition-property: -webkit-transform, opacity;
     -moz-transition-property:    -moz-transform, opacity;
      -ms-transition-property:     -ms-transform, opacity;
       -o-transition-property:      -o-transform, opacity;
          transition-property:         transform, opacity;
}

