@import reset
@import functions

// Fonts
@font-face {
	font-family: 'entypo';
	src:url('../font/entypo.eot');
	src:url('../font/entypo.eot?#iefix') format('embedded-opentype'),
		url('../font/entypo.woff') format('woff'),
		url('../font/entypo.ttf') format('truetype'),
		url('../font/entypo.svg#entypo') format('svg');
	font-weight: normal;
	font-style: normal;
}

