.tutorial

    padding-bottom $spacer * 12

    .step
        color $primary
        font-weight bold
        margin-right $spacer * 2

        &:after
            content " -"

    figure
        margin $spacer * 3 0
        figcaption
            text-align center
            font-size 14px
        img
            margin-bottom 0
            width 100%
            border 1px solid $mid

    ul 
        margin-left 0
        padding-left $spacer * 3

        li 
            margin-bottom $spacer * 2

        figure, .tip
            margin-left $spacer * -3


    