#calc-actions, #calc-total
  opacity: 0
  transition: all .3s ease-out
  margin-top: 40px !important
  position: relative
  right: 300px
  +media-max(980)
    right: 0
    top: -300px

  &.show
    opacity: 1
    right: 0
    +media-max(980)
      top: 0

#calc-total
  text-align: center
  color: colors.green
  font-weight: bold
  margin-left: 20px
  +media-max(1200)
    margin-top: 20px !important
    margin-left: 0
  button
    margin-top: 10px
    // display: none

#calc-actions
  border-left: 2px solid silver
  margin-left: 40px
  padding-left: 40px
  display: flex
  flex-direction: column
  +media-max(1200)
    margin-left: 0
    border-left: none
    padding-left: 0
    margin-top: 10px !important
    align-items: center
  input
    padding: 10px 0 10px 10px
    margin-bottom: 10px
    border-radius: 10px
    font-size: 14px
    +media-max(1200)
      margin-top: 30px
    +media-max(980)
      margin-top: 40px

  &::after
    content: ''
    display: none
    position: absolute
    bottom: 100px
    left: 15%
    height: 2px
    width: 70%
    background: silver
    +media-max(1200)
      display: block
    +media-max(980)
      bottom: 105px

  button
    +media-max(1200)
      // order: -1
    +media-max(1010)
      padding: 12px 25px
      font-size: 14px

#alert-actions
  position: absolute
  bottom: 15px
  width: 280px
  left: 200px
  opacity: 0
  transition: all .2s ease-out
  background: #bdffbb
  padding: 20px 15px 10px
  border-radius: 10px
  box-shadow: 0 0 5px rgba(0, 0, 0, .15)
  text-align: center
  z-index: 15
  +media-max(1200)
    left: auto
    right: 200px
  +media-max(980)
    right: auto
    bottom: 200px

  &.error
    background: #ffe0da
    bottom: 30px
    left: 400px
    width: 200px
    +media-max(1200)
      left: auto
      right: 200px
    +media-max(980)
      right: auto
      bottom: 200px

  &.show
    opacity: 1
    left: 395px
    +media-max(1200)
      left: auto
      right: 100px
    +media-max(980)
      right: auto
      bottom: 50px
    &.error
      left: 650px
      +media-max(1200)
        left: auto
        right: 100px
      +media-max(980)
        right: auto
        bottom: 50px

  span
    position: absolute
    color: colors.error
    top: 5px
    right: 7px
    cursor: pointer
