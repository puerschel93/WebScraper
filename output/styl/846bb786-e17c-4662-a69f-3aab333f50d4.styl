@import '../../css/quasar.variables.styl';

.comment_user
    color:$accent; 
    // padding-left: 5px;

.comment_user-active
    color:$primary !important; 
    // padding-left: 5px !important; 

    
.background-message
    // background-color: $secondary;
    padding: 1% 1% 1% 1%;


.background-message-addressee
    word-wrap: break-word;
    font-size: 10px;
    padding: 1% 1% 1% 1%;
    

.text_message
    color: $text;
    font-size: 15px;
    background-color: #0059c785;
    padding: 3%;
    border-radius: 15px;

.text_message_addressee
    color: $text;
    font-size: 15px;
    background-color: $secondary;
    padding: 3%;
    border-radius: 15px;

.separation_message
    margin-bottom:  20px;

.m_list_con
    padding: 1% 1% 1% 0%;
    // background-color: $secondary;
    border-radius: 25px;

.q-message-text 
    background: $primary;
    padding: 15px 20px 15px 20px;
    line-height: 1.2;
    word-break: break-word;
    position: relative;
    font-size: 17px;


.q-message-name {
    display: none;
}

.q-message-name--sent {
    text-align: right !important;
}
.q-message-text--sent {
    border-radius: 1.3em !important;
}
.text-mess {
    color: $primary !important;
    border-radius: 1.3em !important;
}

.q-message-text--received:last-child:before {
    // /* right: 100%; */
    border-right: 0 solid transparent;
    border-left: 0px solid transparent; 
    /* border-bottom: 8px solid currentColor; */
}
.q-message-text--sent:last-child:before {
    left: 100%;
    border-left: 0 solid transparent;
    border-right: 0px solid transparent;
    border-bottom: 0px solid currentColor;
}
.q-message-container
    align-items: center !important;

    
.q-message-text-content--sent {
    color: $text;
    text-align: left;
}

.q-message-stamp {
    margin: 0px  !important;
    opacity: 1 !important;
    // color: #000 !important;
    display: none;
}
.q-message-avatar {
    border-radius: 50%;
    width: 40px;
    height: 40px;
    min-width: 40px;
}
.q-message-text-content--received {
    color: $text !important;
    text-align: left;
}
.text-color
    color: $text !important;


.text-time 
    color: #8f8f8f !important;   
    
.q-message-text--sent {
    background: linear-gradient(to left,#0095f6,#27c4f5) !important;
    background-image: linear-gradient(to left,#0095f6,#27c4f5) !important;
    // background: radial-gradient(circle, rgba(0,185,255,1) 0%, rgba(2,149,205,1) 0%, rgba(2,149,205,1) 10%, rgba(0,135,185,1) 30%, rgba(3,128,176,1) 51%, rgba(0,135,186,1) 70%, rgba(0,185,255,1) 100%);
}

.casi-todo
    width: 95%;
    padding-top: 10px;
    @media screen and (max-width: 1280px) {
        width: 100%;
    }

.viewved
    font-size: 20px;
    padding-left: 5px;
    padding-bottom: 5px;

.img_conv
    height: 140px;
    max-width: 250px;
    border-radius: 25px;

.scroll_conv
    display: flex;
    flex-direction: column-reverse;

.q-message {
    margin-bottom: 3px;
}