@import '../bower_components/font-awesome/css/font-awesome.min.css'
@font-face {
  font-family: 'PoliticsHeadBold';
  src: url('../fonts/PoliticsHeadv1_9.eot');
  src: local('â˜º'), url('../fonts/PoliticsHeadv1_9.woff') format('woff'), url('../fonts/PoliticsHeadv1_9.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
