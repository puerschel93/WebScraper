.page-scene
	img
		max-width: 100%

	.header
		height: 235px
		padding-top: 66px
		padding-left: 43px
		background: url('../images/scene/1.png') no-repeat
		background-size: 100% auto
		box-sizing: border-box

		h2
			margin-bottom: 29px
			font-size: 24px
			font-family: Source Han Sans
			font-weight: bold
			color: #126153
			line-height: 35px

		p
			font-size: 12px
			font-family: Adobe Heiti Std
			font-weight: normal
			color: #666666
			line-height: 13px

.determine
	.item
		display: flex
		padding: 66px 10px 62px 20px
		box-sizing: border-box
		align-items: center

		&:nth-child(2n+2)
			background: #FAFAFA

		.content-txt
			display: flex
			align-items: self
			flex: 1 1 100%
			padding-right: 20px
			box-sizing: border-box

			&.right
				padding-right: 0
				padding-left: 0px

		.item_img
			flex: 0 0 180px
			font-size: 0

		.content-iocn
			flex: 0 0 27px
			padding-right: 10px
			font-size: 0

		.determine-txt-box
			flex: 1 1 100%
			padding: 0;

			p
				font-size: 12px
				font-family: Source Han Sans
				color: #333333
				line-height: 16px

				&:nth-child(1)
					font-weight: bold
					font-size: 16px

				&:nth-child(2)
					margin-bottom: 10px
