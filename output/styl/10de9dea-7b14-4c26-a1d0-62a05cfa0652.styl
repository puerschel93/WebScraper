.nindex {
  height:100%;
  box-sizing: border-box;
  font-family: 'Rubik', -apple-system, BlinkMacSystemFont, 'Segoe UI',
      Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
      sans-serif;
  font-size: calc(10px + 0.33vw);
  -webkit-font-smoothing: antialiased;
  padding: 5vh 10vw;
  color: #121314;
}

.darkmode--activated .nindex{
  color: #ccc;
}

.nindexBK{
  background: rgba(0,0,0,0);
  height:100%
  display: none
}

.nindexBKC{
  position: absolute;
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.darkmode--activated .nindexBKC{
  background-color: #1e2021
}

.nindex{
  position: absolute;
  overflow: auto;
  webkit-scrollbar { width: 0 !important };
  -ms-overflow-style: none;
  overflow: -moz-scrollbars-none;
  width:100%;
}

.nindex::-webkit-scrollbar { width: 0 !important }

.nindex h1 {
  font-size: 4.5em;
  font-weight: 500;
  margin-bottom: 0;
}

.nindex p {
  font-size: 1.6em;
  font-weight: 300;
  line-height: 1.4;
  max-width: 28em;
}

.nindex a {
  text-decoration: none;
  color: #121314;
  position: relative;
}

.darkmode--activated .nindex a {
  color: #ccc;
}

.nindex a:after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 60%;
  left: -0.1em;
  right: -0.1em;
  bottom: 0;
  transition: top 200ms cubic-bezier(0, 0.8, 0.13, 1);
  background-color: rgba(79, 192, 141, 1);
}

.nindex a:hover:after {
  top: 0%;
}

.headband{
  display: none;
}

div.toggle.sidebar-toggle{
  visibility: hidden;
}

.nindex ul{
  max-height: 0;
  box-sizing: border-box;
  overflow: hidden;
  transition: max-height .5s;
}

.nindex ul.ulactive{
  box-sizing: border-box;
  overflow: hidden;
  max-height: calc((2.2em+20px)*3);
  transition: max-height .5s;
}

.nindex li{
  list-style-type:none;
}



