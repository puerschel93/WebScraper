#exact-sizes
	padding: 20px
	padding-left: 50px
	display: flex
	flex-wrap: wrap
	align-items: center
	transition opacity 1s ease-out
	
	&.show
		opacity 1
	
	+media-max(1070)
		padding: 10px

	+media-max(767)
		justify-content: center

	h2
		flex: 1 1 100%
		color: colors.green
		text-align: center
		margin-bottom: 30px
		text-transform: uppercase

	#exact-sizes-controls
		display: none
		justify-content: center
		margin-bottom: 20px
		
		+media-max(600)
			display: flex

		>span
			margin-right: 30px
			color: colors.green
			cursor: pointer

			&:last-child
				margin-right: 0

			&.active
				border-bottom: 2px solid colors.green

	table
		flex: 1 1
		margin-right: 30px
		border-collapse: collapse
		
		+media-max(1000)
			margin-right: 0
			
		+media-max(750)
			flex-basis: 100%

		colgroup
			col
				&:first-child
					width: 60px
					
					+media-max(1000)
						width: 40px
						
					+media-max(600)
						width: 80px
						
					+media-max(420)
						width: 40px
						
				&:nth-child(4n+2)
					border-left: 2px solid (colors.table-column)

		thead
			border-bottom: 2px solid colors.green

			tr:first-child
				+media-max(600)
					display: none
				th
					padding-bottom: 0
					transform: translateY(-10px)

		th
			font-size: 18px
			font-weight: 400
			color: colors.green
			padding-bottom: 5px
			
			+media-max(850)
				font-size: 16px

		&.show-155 th:nth-child(n+6)
			+media-max(600)
				display: none

		&.show-135 th
			+media-max(600)
				&:nth-child(n+2)
					display: none
				&:nth-child(n+6)
					display: table-cell
				&:nth-child(n+10)
					display: none

		&.show-125 th
			+media-max(600)
				&:nth-child(n+2)
					display: none
				&:nth-child(n+10)
					display: table-cell

		tbody
			tr
				border-bottom: 2px solid (colors.table-column)
				&:last-child
					border-bottom: none

		td
			text-align: center
			padding: 5px
			cursor: pointer
			transition: all .15s ease-out
			
			&:first-child
				text-align: left
				font-size: 20px
				color: colors.green
				cursor: default
				
				+media-max(850)
					font-size: 18px
			&.active
				background: colors.greenlight
			&.hover
				background: #ffdbbc

		&.show-155 td:nth-child(n+6)
				+media-max(600)
					display: none

		&.show-135 td
			+media-max(600)
				&:nth-child(n+2)
					display: none
				&:nth-child(n+6)
					display: table-cell
				&:nth-child(n+10)
					display: none

		&.show-125 td
			
			+media-max(600)
				&:nth-child(n+2)
					display: none
					
				&:nth-child(n+10)
					display: table-cell

	>span
		display: none
		flex-basis: 100%
		text-align: center
		color: colors.green
		font-size: 36px
		
		+media-max(767)
			display: inline-block

	.view-sizes
		flex: 0 0 400px
		position: relative
		
		+media-min-max(767, 991)
			flex-basis: 300px
			
		+media-max(400)
			flex-basis: 300px

		span
			position: absolute
			display: inline-block
			background: colors.greenlight
			border: 1px solid #000
			border-radius: 10px
			width: 30px
			height: 30px
			display: flex
			justify-content: center
			align-items: center
			transition: all .2s ease-out
			
			+media-max(767)
				margin-top 20px
				
			+media-min-max(767, 991)
				width: 20px
				height: 20px
				font-size: 14px
				border-radius: 5px
				
			+media-max(400)
				width: 20px
				height: 20px
				font-size: 14px
				border-radius: 5px

			&.label
				width: auto
				height: auto
				padding: 5px
				bottom: 100px
				left: calc(50%)
				transform: translateX(-50%)
				
				+media-min-max(767, 991)
					bottom: 75px
					
				+media-max(400)
					bottom: 75px

	.comment
		flex: 1 1 100%
		
		+media-max(400)
			font-size: 14px

#size-a
	right: 180px
	bottom: 20px
	
	&::after
		content: 'A'
		position: absolute
		bottom: -10px
		left: -15px
		font-size: 18px
		
	+media-min-max(767, 991)
		right: 134px
		bottom: 17px
		
	+media-max(400)
		right: 134px
		bottom: 17px

#size-b
	left: 17px
	top: 160px
	
	&::after
		content: 'B'
		position: absolute
		bottom: -10px
		right: -15px
		font-size: 18px
		
	+media-min-max(767, 991)
		left: 15px
		top: 120px
		
	+media-max(400)
		left: 15px
		top: 120px

#size-c
	top: 5px
	right: 178px
	
	&::after
		content: 'C'
		position: absolute
		top: -10px
		left: -15px
		font-size: 18px
		
	+media-min-max(767, 991)
		right: 135px
		
	+media-max(400)
		right: 135px

#size-d
	top: 127px
	right: 23px
	
	&::after
		content: 'D'
		position: absolute
		bottom: -10px
		right: -15px
		font-size: 18px
		
	+media-min-max(767, 991)
		top: 95px
		right: 20px
		
	+media-max(400)
		top: 95px
		right: 20px