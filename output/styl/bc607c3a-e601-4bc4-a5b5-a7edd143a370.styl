$fontA = 'Montserrat', sans-serif
$fontB = 'Exo', sans-serif


mjx-container
    font-size 1.5rem
    background $highlight
    padding .5rem

mjx-container > svg
    max-width 95% 


body, html
    background #c6c6c6
    font-size .95rem !important
    
    @media (max-width $MQMobile)
        letter-spacing -1px
        font-size .85rem !important
        overflow-wrap: break-word



.theme-default-content

    a
        outline none
        
        padding .1rem .25rem
        font-weight bold
        color #4a4a4a
        background $highlightB



    a:hover
        text-decoration none !important
        color $highlightB
        background #4a4a4a

p, li
    transition .3s

h2, h1
    transition .2s
    
h1
    font-size 2.75rem
    color lighten($textColor, 20%)
    margin-bottom 2.5rem
    word-break break-word
    @media (max-width $MQNarrow)
        font-size 2rem
        
h1:first-child
    margin-top -.25rem !important
        
    
h2
    color lighten($textColor, 10%)
    
h3
    color lighten($textColor, 25%)   
    font-size 1.2rem
    

.header-anchor
    display none

em
    background $highlightB
    background-image url('/img/highlight.png')
    font-style normal
    padding .2rem
    font-weight bold
    transition background-color 2.3s
    opacity .95 
    display inline-block
    font-size 1.05rem
    line-height 1.2
    text-align left
    margin .25rem 0
    color #333
    transition background-color 2.5s

.theme-default-content

    ul
        position relative
        margin .25rem 0
        color #eee
        padding .5rem 1.5rem
        margin .75rem 0
        list-style none
        border-radius .2rem


        em
            //background #444
            background #4a4a4a
            background-image url('/img/highlight.png')
            color #fff
            
        li
            position relative
            margin-left 1.5rem
            padding .35rem 0
            border-bottom 1px solid #444
            color $textColor
            @media (max-width $MQMobile)
                font-size .9rem

            p
                line-height 1.5


        li:last-child
            border-bottom none
            
        li:before 
            content ''
            height 1.75rem
            width 1.75rem
            display block
            position absolute
            background-image url('/img/list.png')
            background-size cover
            background-position center
            transform translateY(-50%)
            filter invert(30%)
            left -2.75rem
            top 50%


    ol
        position relative
        margin .25rem 0
        color #eee
        padding .5rem 1.5rem
        margin .75rem 0
        //list-style none
        border-radius .2rem


        em
            background #444
            background-image url('/img/highlight.png')
            color #fff
            
        li
            position relative
            margin-left .5rem
            padding .35rem 0
            border-bottom 1px solid #bbb
            color $textColor
            text-indent .5rem
            @media (max-width $MQMobile)
                font-size .9rem

            p
                line-height 1.5

            a
                color $highlightB
                font-weight bold

            a:hover
                text-decoration none !important
                color $highlight


        li:last-child
            border-bottom none
            
        


    @media (max-width: $MQNarrow)
        padding 1rem !important


img
    filter grayscale(80%) sepia(23%) contrast(90%) brightness(102%)
    min-width 100%

.navbar
    border-bottom none !important
    //opacity .925
    
    background-color #222 !important
    background-image url('/img/chess.png'), linear-gradient(135deg, #222 36%, #444 100%) !important
    background-position bottom right
    background-repeat no-repeat
    background-size 20rem
    z-index 10000
    @media (max-width $MQMobile)
      box-shadow -1px 3px 3px $textColor

.navbar, .navbar .links
    font-family $fontA
    .nav-link
        color #ddd !important
    .nav-link:hover
        border-bottom 2px solid $highlight !important

    .site-name
        color #ddd !important
        font-size 2.5rem !important


    a.nav-link.router-link-exact-active.router-link-active
        border-bottom 2px solid $highlight !important
        

.navbar .links
    background-color transparent !important

.nav-links
    color #eee !important

.sidebar-button
    color #eee 

.navbar
    border-bottom none !important


@media (max-width: $MQMobile)
    .search-box input:focus
        position fixed
        display flex
        top 0
        min-width 100vw 
        max-width 100vw
        width 100vw
        padding 0 1rem
        border-radius unset
        height 3.75rem
        background #333
        font-size 1.5rem
        color $highlight
        font-weight bold
        box-sizing border-box
        border 1px solid #111 !important

.search-box input
    transition unset !important
    

.sidebar
    border-right none
    background-color #222 !important
    // background linear-gradient(135deg, #222 36%, #444 100%) !important
    background-image url('/img/chess.png'), linear-gradient(135deg, #222 36%, #444 100%) !important
    background-position bottom right
    background-repeat no-repeat
    background-size contain
    z-index 200
    //opacity .975
    @media (max-width $MQMobile)
      width 80vw !important
    @media (min-width 1200px)
      width 23rem !important

    span 
        color #eee
        font-size 1.25rem
        
        
    ul
        font-size 1rem
        font-style normal

    span:hover
        color $highlight
        

    .sidebar-link
        color #eee
        border-bottom none !important 
        
    .sidebar-link:hover
        color $highlight

     a.active.sidebar-link 
        color $highlight
        border none !important 
        


.page
    h2
        display inline-block
        border-bottom none !important
        padding 4.5rem 1rem 0 1rem !important
        margin-top -.75rem !important
        margin-left -1.5rem !important

        @media (max-width $MQNarrow)
            margin-left -1.2rem !important

        
.page-nav
    a
        color #555
    a:hover
        color #888

    



.site-name, .sidebar-group, .hero .description
    font-family $fontB
    font-style italic
    
.site-name
    position relative
    top .25rem

.sidebar-group
    font-size 1.25rem

body, html
    font-family $fontA

h1, h2, h3
    font-family $fontB
    font-style italic


iframe
    display flex
    min-width 100%
    max-width 100%
    width 100%
    //height 50vh
    //max-height 50vh
    min-height 200px
    @media (max-width $MQMobile)
        height 35vh


.verkehrsverhalten
    background tint($C-verkehrsverhalten, 45%)

.pädagogik
    background tint($C-paedagogik, 65%)

.kommunikation
    background tint($C-kommunikation, 65%)

.psychologie
    background tint($C-psychologie, 55%)

.anhänger
    background tint($C-anhaenger, 30%)

.technik
    background tint($C-technik, 35%)



.sidebar::-webkit-scrollbar 
    width .25em

.sidebar::-webkit-scrollbar-thumb 
    background-color $highlight

.sidebar::-webkit-scrollbar-track 
    background-color none

.sidebar
    scrollbar-color $highlight transparent
    scrollbar-width thin


body::-webkit-scrollbar 
    width .75em

body::-webkit-scrollbar-track 
    background-color #444

body::-webkit-scrollbar-thumb 
  background-color $highlight

html
    scrollbar-color $highlight #333

div.page-nav .inner
    border-top none