// fonts
@import "http://webfonts.ru/import/pacifico.css"

// lib
@import '_grid'

// my
@import '_util'
@import '_base'


header
	background-color rgba(#101636, .2)
	position absolute
	top 0
	left 0
	width 100%
	z-index 3

	&.fixed
		position fixed
		background-color rgba(#101636, .9)

		.logo
			padding-top 8px

		nav a
			padding-top 18px

	.logo
		padding 22px 0 9px

		a, span
			display inline-block
			vertical-align middle

		a
			padding-right 25px

		span
			padding-left 25px
			border-left 1px solid main-color-2
			opacity .5
			color #fff

		button.toggle-nav
			float right
			display none
			margin 8px 16px 0 0
			width 28px
			height @width
			padding 2px 5px
			background main-color
			color #fff
			border none
			outline none
			border-radius 3px

	.nav
		@extend .clearfix

	nav
		float right

		a
			display inline-block
			color #fff
			text-decoration none
			padding 32px 0 20px
			margin 0 15px
			position relative

			&:hover, &.active

				&:after
					height 2px

			&:after
				content ''
				position absolute
				top 0
				left 0
				right 0
				height 0px
				background-color main-color-2
				transition height .3s


section.box
	padding-top 70px
	padding-bottom 50px

	.box-title
		text-align center
		margin-bottom 40px

		h3, .icon, p
			max-width 930px
			margin 0 auto
			margin-bottom 10px

		h3
			font-weight 900
			color main-color
			text-transform uppercase
			font-size 28px
			letter-spacing -.6px

		.icon

			span
				color #c3c6c7
				position relative
				display inline-block

				&:after, &:before
					content ''
					position absolute
					top 50%
					transform translateY(-50%)
					height 1px
					background-color #dce1e5
					width 90px

				&:after
					left 25px

				&:before
					right 25px

		p
			font-size 1.3em

			&:first-of-type
				padding-top 20px


section.banner
	height 100%
	min-height 700px
	max-height 900px
	position relative

	.bx-wrapper .bx-viewport
		left 0

	.bx-wrapper .bx-viewport .bx-wrapper .bx-controls .bx-pager
		display none

	.bx-wrapper, .bx-viewport, .slider-1, .item
		display block
		width 100%
		height 100% !important
		border none
		background transparent
		box-shadow none
		color #fff
		margin 0

	.bx-controls
		position absolute
		right 0
		top 50%
		transform translateY(-50%)

	.item
		position relative
		text-align center
		background-repeat no-repeat
		background-size cover

		h2, h3, p
			line-height 1.2

		h2
			font-weight bold
			font-size 4.7em

			span
				font-weight 300

		h3
			font-size 3.6em
			font-weight 300
			margin-bottom 14px

			span
				color #0feb9e

		p
			font-size 1.3em
			position relative
			display inline-block
			margin-bottom 10px
			font-weight 300

			&:after, &:before
				content ''
				display block
				background-color #0feb9e
				height 1px
				width 28px
				position absolute
				top 50%
				transform translateY(-50%)

			&:before
				left -60px

			&:after
				right -60px

		.socials
			padding 90px 0 40px

		.item-content
			position absolute
			bottom 0
			left 0
			right 0

	.bx-pager
		padding 0
		bottom inherit
		right 40px
		top 50%
		width auto
		transform translateY(-50%)

		.bx-pager-item

			a
				background transparent
				border 1px solid #fff
				opacity .4
				transition opacity .2s, background .2s
				margin 6px 0

				&.active, &:hover
					background #fff
					opacity 1


section.features
	background-color #f4f7f9

	.features-items

		.item
			@extend .clearfix

			display inline-block
			vertical-align top

			icon-width = 70px

			.icon
				float left
				width icon-width
				margin-right icon-width * -1
				margin-top 4px
				text-align center

				span
					display inline-block
					width 40px
					height @width
					line-height @width - 3px
					text-align center
					color main-color
					border 1px solid main-color
					border-radius 50%
					font-size 18px

			.text
				float left
				margin-left icon-width
				padding-right 30px

				h4
					margin-bottom 12px
					font-size 1.4em
					font-weight 600
					color #062033

				p
					font-size 1rem
					color #717982
					line-height 1.6


section.works
	background-color #fff
	padding-bottom 0

	.tags
		text-align center

		button
			display inline-block
			background transparent
			border 0
			outline 0
			font inherit
			text-decoration none
			border-radius 5px
			padding 6px 15px
			margin 2px 4px
			font-weight bold
			transition color .3s, background-color .3s

			&.active, &:hover
				background-color main-color
				color #fff

	.items
		@extend .clearfix

		padding-top 38px
		font-size 0
		display table
		width 100%
		text-align center

		.item
			overflow hidden
			background-position center center
			background-repeat no-repeat
			background-size cover
			width (100% / 4)
			height 270px
			font-size 1rem
			// display inline-block
			display none

			&:hover
				.overlay
					opacity 1

			.overlay
				display flex
				justify-content center
				align-items center
				flex-direction column
				width 100%
				height 100%
				opacity 0
				background-color rgba(main-color, .9)
				color #fff
				text-align center
				transition opacity .2s ease-in-out

				h4
					font-size 1.3em
					margin-bottom 5px

				.icon
					display block
					margin-bottom 20px

					&:hover

						span
							background-color #FFF
							color main-color

					span
						display inline-block
						width 40px
						height @width
						line-height @width
						border 1px solid #fff
						border-radius 50%
						font-size 20px
						transition color .3s, background-color .3s


section.team
	background-color #fff

	.item
		padding 15px
		text-align center

		&:hover

			.overlay
				opacity 1

			h4
				color main-color

		.overlay
			display flex
			justify-content space-between
			align-items center
			flex-direction column
			width 100%
			height 100%
			padding 15px
			opacity 0
			background-color rgba(main-color, .9)
			color #fff
			transition opacity .2s ease-in-out


			p, .social
				color #fff

			p
				font-size 1.2em
				line-height 1.8em

			.social

				a
					display inline-block
					width 40px
					height @width
					line-height @width
					margin 1px 2px
					font-size 20px
					background-color rgba(#000, .3)
					transition background-color .3s

					&:hover
						background-color rgba(#000, .8)


		.picture
			height 300px
			background-size cover
			background-repeat no-repeat
			background-position center center
			margin-bottom 18px

		h4
			margin-bottom 6px
			transition color .3s
			font-size 1.3em

		p
			color #979ca1


section.facts
	background url('../img/facts.jpg') no-repeat center center
	background-size cover
	padding-bottom 100px

	.box-body
		font-size 0
		display table
		width 100%

	.item
		font-size 13px
		font-size 1rem
		display inline-block
		width (100% / 4)
		text-align center
		padding 10px 0
		color #fff

		.picture
			margin-bottom 30px

			span
				display inline-block
				margin 0 auto
				width 130px
				height @width
				line-height @width - 5%
				font-size 40px
				color #fff
				border 1px solid rgba(#fff, .7)
				border-radius 50%

				svg
					fill #fff

		h2
			font-size (60/13)em
			font-weight 600

		p
			text-transform uppercase
			font-size 1.4em


section.contact

	.box-body
		padding-top 20px
		padding-bottom 20px

		h2
			font-size 1.8em
			font-weight normal
			margin-bottom 34px

		p
			line-height 1.8em
			color #6a737b

		.field
			padding 15px

			textarea
				height 51px

				&:focus
					height 137px

			input, textarea
				display block
				width 100%
				max-width 100%
				border 0
				outline 0
				font inherit

				color #5b646e
				border-bottom 1px solid #ccc
				padding 10px 0
				transition border-color .3s, height .1s

				&:focus
					border-color main-color

		.icons
			text-align center

			a
				display block
				margin 0 0 0 auto
				color #cdd2d6
				font-size 22px
				width 35px
				height 35px
				margin-bottom 10px
				line-height 35px
				transition color .3s

				&:hover
					color main-color

		.button
			text-align right
			padding 5px 10px

			button
				border 0
				outline none
				background none
				color #000
				font-size 1.2em
				padding 8px 15px
				border-radius 5px
				cursor pointer

				&, & i
					transition background-color .3s, color .3s

				&:hover
					background-color main-color

					&, & i
						color #fff

				i
					color main-color
					margin-right 5px


section.map

	img
		display block
		width 100%


footer.main-footer
	background-color main-color
	padding 90px 0 120px 0
	color #fff
	border-top 5px solid #062033

	.col
		padding 0 15px

	.title
		padding-bottom 40px
		min-height 79px

		h4
			font-size 1em
			padding-top 21px

	p
		line-height 1.9em

	form.subscribe-form
		margin-bottom 15px

		input
			display block
			width 100%
			background transparent
			border 2px solid #fff
			outline none
			border-radius 5px
			font inherit
			padding 9px 17px
			color inherit

	ul
		list-style none
		display table
		font-size 0
		width 100%

		li
			font-size 13px
			font-size 1rem
			display inline-block
			width 50%
			margin-bottom 15px
			vertical-align top

			a
				display block

	.created
		border-left 1px solid rgba(#062033, .3)
		padding-left 10px
		margin-bottom 50px

		i, a
			color #062033

		i
			margin 0 5px

	.copy
		color #062033


@import '_media'
