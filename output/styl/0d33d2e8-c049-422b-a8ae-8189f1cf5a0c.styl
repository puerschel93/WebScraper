.top-line
	position relative
	height 88px
	z-index 10
	trn(.25s)
	margin-bottom 4px
	&.is-active
		background: cBlackD
	@media screen and (max-width: 920px)
		height 64px
	.container
		padding-left 32px
		padding-right 32px
		@media screen and (max-width: 920px)
			padding 0 25px
		@media screen and (max-width: 360px)
			padding 0 20px
		@media screen and (max-width: 320px)
			padding 0 15px
	.flex-wrapper
		height 88px
		display flex
		justify-content space-between
		align-items center
		@media screen and (max-width: 920px)
			height 64px
	&--left
		display flex
		align-items center

.logo-top
	margin-right 64px
	padding-top 2px
	@media screen and (max-width: 1100px)
		margin-right 32px
	@media screen and (max-width: 920px)
		margin-right 20px
	@media screen and (max-width: 920px)
		margin-right 0
	&__link
		display inline-block
		text-decoration none
		font-family: fPoppinsBold
		font-size 21px
	&__img
		margin-right 19px
	&__name
		display inline-block
		vertical-align top
		margin-top 15px
		color cWhite

.menu-header
	padding-top 5px
	@media screen and (max-width: 920px)
		display none
	&.is-active
		visibility visible
		opacity 1
		transition all .25s ease-out
	@media screen and (max-width: 720px)
		position fixed
		top 0
		left 0
		display flex
		align-items center
		justify-content center
		width 100%
		height 100%
		background #333
		visibility hidden
		opacity 0
		
	.nav-top
		&__list
			text-align right
			@media screen and (max-width: 720px)
				text-align center
		&__list-li
			display inline-block
			&.is-active,
			&:hover
				a
					&:before
						bottom -17px
						opacity 1
						visibility visible
			&:not(:last-child)
				margin-right 40px
				@media screen and (max-width: 1060px)
					margin-right 24px
				@media screen and (max-width: 960px)
					margin-right 18px
				@media screen and (max-width: 720px)
					margin-right 0
					display block
					margin-bottom 30px
			a
				position relative
				display inline-block
				color: cWhite
				font-size 13px
				ffa(fSB)
				ls(-0.09px)
				c cWhite
				text-transform uppercase
				text-decoration none
				@media screen and (max-width: 940px)
					font-size 12px
				&:before
					position absolute
					bottom -24px
					left 0
					content ""
					display block
					width 100%
					height 3px
					background: cYellow
					trn(.15s)
					opacity 0
					visibility hidden
				@media screen and (max-width: 720px)
					font-size 25px
					

.burger-menu
	position relative
	display none
	cursor pointer
	width 16px
	height 10px
	outline none
	margin-right 24px
	&.is-active
		height 16px
		span
			position absolute
			top 50%
			left 0
			margin-bottom 0
			tt(0, -50%)
			&:nth-child(1)
				transform rotateZ(45deg)
			&:nth-child(2)
				display none
			&:nth-child(3)
				transform rotateZ(-45deg)
	@media screen and (max-width: 920px)
		display block
		z-index 10
	span
		display block
		height 2px
		width 16px
		margin-bottom 2px
		background: cWhite
		brr(2px)
		trn(.25s)
		&:last-child
			margin-bottom 0

// Navigation login

.navigate-login
	position relative
	padding-left 40px
	@media screen and (max-width: 940px)
		padding-left 30px
	@media screen and (max-width: 920px)
		padding-left 0
	&:before
		position absolute
		left 0
		top 50%
		height 30px
		width 1px
		content ""
		background: cGrayD
		tt(0, -50%)
		@media screen and (max-width: 920px)
			display none
	ul
		li
			display inline-block
			&:not(:last-child)
				margin-right 20px
				@media screen and (max-width: 375px)
					margin-right 12px
			&:hover
				a
					c cYellow
			a
				position relative
				display inline-block
				color: cWhite
				font-size 14px
				ffa(fSB)
				ls(-0.09px)
				c cWhite
				text-decoration none
				trn(.25s)

// User Login

.wrapper--user-login
	position relative
	display flex
	flex-direction row
	@media screen and (max-width: 480px)
		position inherit

.user-login
	display flex
	flex-direction row
	align-items flex-end
	margin-right 16px
	@media screen and (max-width: 480px)
		margin-right 0
	.user-login--name
		text-align right
		cursor pointer
		p
			font-size 12px
			ffa(fSB)
			c cWhite
			ls(-0.09px)
			margin-bottom 2px
		.deposit-sum
			font-size 12px
			ffa(fR)
			c cGray
			ls(-0.09px)
			
	.user-login--images
		position relative
		width 32px
		height 32px
		margin-left 16px
		cursor pointer
		overflow hidden
		img
			position absolute
			top 50%
			left 50%
			width 100%
			height auto
			tt(-50%, -50%)

.drop--menu-user
	position absolute
	top calc(100% + 30px)
	right -24px
	display block
	min-width 304px
	background: cBlackD
	border 1px solid cGrayD
	brr(10px)
	box-shadow: 0 5px 20px rgba(5, 5, 5, 0.25)
	opacity 0
	visibility hidden
	trn(.2s)
	@media screen and (max-width: 920px)
		right -16px
	@media screen and (max-width: 480px)
		width 100%
		right auto
		left 0
		border 1px solid transparent
	&.is-active
		top calc(100% + 16px)
		opacity 1
		visibility visible
		@media screen and (max-width: 480px)
			top 100%
	
	&:before
		position absolute
		top -5px
		right 126px
		content ""
		display block
		width 8px
		height 8px
		background: cBlackD
		border-style: solid
		border-width: 1px 0 0 1px
		border-color: cGrayD
		transform rotateZ(45deg)
		@media screen and (max-width: 920px)
			right 118px
		@media screen and (max-width: 480px)
			border-color: transparent
			right 32px
		@media screen and (max-width: 320px)
			right 26px
	
	.full--item-user,
	.fifty--item-user
		padding 20px 22px
		border-bottom 1px solid cGrayD
	
	.full--item-user
		border-bottom 1px solid cGrayD
		&.menu-user
			border-bottom 0
	.fifty--item-user
		width 50%
		&.right-border
			border-right 1px solid cGrayD
	
	.wrapper--fifty-user
		display flex
		flex-direction row
		flex-wrap wrap

	.items-balanse
		padding-top 22px
		padding-bottom 22px
	
	.show-balanse
		min-height 70px
		display flex
		flex-direction row
		align-items center
		justify-content space-between
		
		.checked-item
			min-width 40px
			min-height 24px
	
	.name-option
		margin-bottom 2px
	
	.sum-option
		&__big
			.balanse-main
				opacity 1
				trn(.25s)
			&.is-active
				.balanse-main
					opacity 0
	
	.reload
		position relative
		top 3px
		display inline-block
		width 18px
		height 18px
		padding-top 1px
		padding-left 1px
		margin-left 15px
		cursor pointer
		&.is-active
			-webkit-animation: rotating 2s linear infinite
			-moz-animation: rotating 2s linear infinite
			-ms-animation: rotating 2s linear infinite
			-o-animation: rotating 2s linear infinite
			animation: rotating 2s linear infinite

.list--menu-user
	padding 14px 0
	li
		&:not(:last-child)
			margin-bottom 34px
		a
			font-size 14px
			ffa(fSB)
			ls(-0.1px)
			c cWhite
			trn(.25s)
			text-decoration none
			&:hover
				c cGray
			&.disable-link
				c cGray
	
// Rotate reload

@keyframes rotating
	from
		-ms-transform: rotate(0deg)
		-moz-transform: rotate(0deg)
		-webkit-transform: rotate(0deg)
		-o-transform: rotate(0deg)
		transform: rotate(0deg)
	to
		-ms-transform: rotate(360deg)
		-moz-transform: rotate(360deg)
		-webkit-transform: rotate(360deg)
		-o-transform: rotate(360deg)
		transform: rotate(360deg)

@-webkit-keyframes rotating
	from
		-ms-transform: rotate(0deg)
		-moz-transform: rotate(0deg)
		-webkit-transform: rotate(0deg)
		-o-transform: rotate(0deg)
		transform: rotate(0deg)
	to
		-ms-transform: rotate(360deg)
		-moz-transform: rotate(360deg)
		-webkit-transform: rotate(360deg)
		-o-transform: rotate(360deg)
		transform: rotate(360deg)

