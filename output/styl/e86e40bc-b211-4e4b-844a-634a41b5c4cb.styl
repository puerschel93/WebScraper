.insta-container
	background-size cover
	background-position 50% 100%
	height  620px
	position relative
	overflow hidden
	position absolute
	width  839px
	right -60px
	+above(1080px)
		.insta-slide.swiper-slide
			width 270px
			height 546px
			border 1px solid #f0f0f0
			.insta-user-pic
				top 255px
		.swiper-container-horizontal > .swiper-pagination
			bottom -29px
	+below(1080px)
		position: static
		background: url("../img/header.jpg") no-repeat
		background-size: cover
		background-position: 100% 45%
		.overlay
			display none
		

.instagram-media
	box-shadow none !important

.number-block__instas
	max-width 640px
	// overflow-x scroll
	overflow hidden
	height inherit
	position relative
	+below(1080px)
		max-width 100%
	// .number-block__instas-container
	// 	width 130%
	// 	overflow hidden

.insta-block
	size 128px
	background-color white
	position relative
	float left
	.center
		width 100%
	.bottom
		position absolute
		width 100%
		bottom 0
		
.insta-block__img-border
	width 72px
	height 72px
	border-radius 50%
	border 2px solid blue
	position relative
	margin auto
.insta-block__img
	margin auto
	border-radius 50%
	@extend $absolute-cover
	width 62px
	height 62px
	overflow hidden
	&.is-small
		border none
		padding 0
		size 32px
		position absolute
		top -90px

.insta-block__name
	color blue
	fs(15px)
	upcase()
	letter-spacing 2px
	line-height 1.8
	font-family boldcond

.insta-block__info
	fs(7px)
	font-family regular
	color gray
	letter-spacing 2px
	upcase()
	a
		color blue !important
		&:link
			color blue !important
	span
		size 9px
		display inline-block
		vertical-align middle
		margin-right 5px
		position: relative
		top -1px
		background: url(unquote('data:image/svg+xml;base64,')) no-repeat; 
		background-size: cover;

.insta-block__info-bg
	background-color rgba(deepblack,0.9)
	margin 0 10px
	padding 30px 0 10px

.insta-overlay
	background-color white
	clearfix()
	@extend $absolute-cover
	width 588px
	height 326px
	text-align left
	z-index 0
	opacity 0
	transition 0.30s ease-in
	a.button.instabutton
		padding 10px 10px 10px 10px
		fs(12px)
		img
			width 12px !important
			height 12px !important
			top -1px !important
	&.is-active
		z-index 1
		opacity 1
	.close-button
		size 20px
		position absolute
		top 18px
		right 18px
	.center
		width 75%
		margin-left 20px
	p
		fs(18px)
		em
			font-family boldcondit
	
.insta-overlay__col
	position: relative
	span(1/2)
	height inherit
	&.insta-overlay__col--right
		float right

.insta-overlay__name
	fs(44px)
	font-family boldcond
	padding 5px 0 0px 0
	
.has-happened .insta-overlay__name
	padding-bottom 5px

.insta-user
	fs(16px)
	font-family regular
	
.insta-name
	font-family boldcond
	fs(30px)
	// padding-bottom 10px
	
.insta-overlay__user
	fs(14px)
	font-family regular

.has-happened .insta-overlay__name
	fs(32px)
	font-family medcond
	
	
.insta-overlay__large-text 
	fs(48px)
	font-family medcond
	padding-top 6px
	
.insta-overlay__small-text
	fs(16px)
	font-family lightcond

.insta-overlay__location
	font-family lightcond
	fs(20px)
	padding-bottom 10px

	
.insta-user-pic
	align()
	size 90px
	z-index 10
	border-radius 50%
	border 8px solid white
	
.swiper-container
	width 100%
	height 560px
	align()
	top 48%
	overflow visible

.insta-info
	padding 20px 16px 0px 16px
	display inline-block
	height 200px
	overflow hidden
	position: relative
	.button
		position absolute
		bottom 5px
		left 30px
		right 30px
		margin auto
	p
		line-height 1.6
	a
		color blue
		word-break break-all
	+ img
		position absolute
		bottom 0
	
.insta-slide
	width 270px
	height 560px
	position relative
	background-color white
	margin auto
	cursor pointer
	cursor grab
	a
		cursor pointer
	.button.instabutton, a.button.instabutton
		border 1px solid black
			
	.insta-user-pic
		top 270px
		size 70px
	p
		fs(13px)
		// padding-top 8px
		padding-bottom 2px
	a.button.instabutton
		border 1px solid black
		color black
		fs(12px)
		padding 10px 10px 10px 10px
		img
			width 12px !important
			height 12px !important
			top -1px !important

.insta-gram
	position absolute
	bottom 0
	left 0
	right 0
	margin auto
	display inline-block
	
.swiper-pagination-bullet
	size 10px
	background #becec0
	opacity 1
	&.swiper-pagination-bullet-active
		background blue

.swiper-container-horizontal > .swiper-pagination
	bottom -30px
	+below(1080px)
		bottom -40px
		display none

.insta-slide.swiper-slide
	.insta-overlay
		opacity 1
