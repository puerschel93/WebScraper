.ig-camera
	display none !important
.IGF.small .ig-text
	padding 0 !important
	font-family boldcond
	color black !important
	fs(18px)
		

.slider-button
	size 30px 60px
	background-color blue
	position absolute
	top -10px
	bottom 0
	margin auto
	z-index 200
	transition 0.2s ease 
	+below(1080px)
		display none
	&.next-button
		background blue url(../img/arrow-right.png) no-repeat
		background-size 10px auto
		background-position 50% 50%
		right 5px
		left auto
		&:hover
			background black url(../img/arrow-right.png) no-repeat
			background-size 10px auto
			background-position 50% 50%
	&.prev-button
		background blue url(../img/arrow-left.png) no-repeat
		background-size 10px auto
		background-position 50% 50%
		left 5px
		right auto
		&:hover
			background black url(../img/arrow-left.png) no-repeat
			background-size 10px auto
			background-position 50% 50%

.index-slide .insta-name
	&:hover
		color blue
		transition 0.2s ease

