/**
 * ROTATES
 */
// rotate-down
@keyframes rotateDownLeftIn {
  from {
    transform-origin left bottom
    transform rotate3d(0, 0, 1, -45deg)
    opacity 0
  }

  to {
    transform-origin left bottom
    transform none
    opacity 1
  }

}

@keyframes rotateDownLeftOut {
  from {
    transform-origin left bottom
    opacity 1
  }

  to {
    transform-origin left bottom
    transform rotate3d(0, 0, 1, 45deg)
    opacity 0
  }
}


