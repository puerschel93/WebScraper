theme-color = #59ebff // #fff

.glightbox-container,
.gslide-inner-content > .ginner-container,
.goverlay
    width: 100vw;
    height: 100vh;
    overflow: hidden;

.gdesc-inner
  user-select: text;

.greset
  transition: all .3s ease;

.gabsolute
  position: absolute;

.grelative
  position: relative;

.glightbox-container
    position: fixed;
    bottom: 0; // fix gap
    left: 0;
    z-index: 999; // a local stacking context.
    touch-action: none;
    user-select: none;

    *
      &:focus
        outline: none;

.gcontainer
    > .gslider
      position: relative;
      transition: transform .4s ease;
      > .gslide
        position: absolute;
        opacity: 0;
        display: none;
        align-items: center;
        justify-content: center;

        &.current
          display: block;
          opacity: 1;
          z-index: 2;
        
        &.prev
          display: block;
          opacity: 1;
          z-index: 1;

.gslide-inner-content
   > .ginner-container
      &.desc-bottom
        position: relative;
        max-width: 100%;
        display: flex;
        justify-content: center;
        flex-direction: column;

html.glightbox-open
  overflow: hidden;

.gloader
  height: 25px;
  width: 25px;
  position: absolute;
  z-index: 1;
  left: calc(50% - 12.5px);
  top: 47%;
  animation: lightboxLoader .8s infinite linear;
  border: 2px solid theme-color;
  border-right-color: transparent;
  border-radius: 50%;

.goverlay 
  position: fixed;
  background-color: #000;

.glightbox-closing 
  > .goverlay
    opacity: 0  //fix blink


/* image */
.gslide-image
  margin: 30px auto 0;
  box-shadow: 1px 2px 9px 0px rgba(0, 0, 0, 0.65);
  > img
    display: block;
    object-fit: cover;
    min-width: 200px;
    width: auto;
    max-height: calc(97vh - 30px);
    max-width: 100%;
    touch-action: none; // auto inherited: no
    &.error
      left: 19.5px;
      bottom: 15px;
      min-width: 72px !important;
      position: relative;
    &.zoomable
      position: relative;
    &.dragging
      cursor: grabbing !important;
      transition: none;

.zoomed .gslide-image // gslide
  box-shadow: none !important;


/* button */
.gbtn
  background: rgba(0, 0, 0, 0.12) 0 0 no-repeat;
  z-index: 2;
  cursor: pointer;
  border: none;
  position: absolute;
  top: 45%;
  width: 40px;
  height: 56px;
  &:hover
    background-color: rgba(0, 0, 0, 0.20);
  &.disabled
    opacity: .1 !important;
  > svg
    display: block;
    path
      fill: #fff;

.gprev
  left: 30px;

.gnext
  right: 30px;

.gclose
  width: 40px;
  height: 40px;
  top: 1vh;
  right: 2vw;
  opacity: .7;
  &:hover
    opacity: 1;
  > svg
    width: 20px;
    margin: 0 auto;
  

/* hidden */
.glightbox-closing 
  .gbtn
    opacity: 0 !important;

.gslide
  &:not(.loaded)
    .gslide-description
      display: none;

.glightbox-container
  &.inactive
    display: none;

.zoomed 
  .gslide-description
    display: none;

.gslide-desc
  display: none;


/* description */
.gdesc-inner
  padding: 22px 20px;

.gslide-description
  margin: 0 auto;

.gdesc-inner
  &.without-desc
    padding: 0;

.gslide-title
  &.without-desc
    line-height: 1.6em;
    white-space: nowrap;
    background: #000;
    color: #E7E7E7;
    font-size: 14px;
    padding: 8px 12px;
    border: 0;
    border-radius: 1px;
    box-sizing: border-box;
    box-shadow: 1px 2px 10px rgba(0, 0, 0, 0.2);

.gdesc-open .gdesc-inner
  padding-bottom: 30px;


/* Description for mobile */
.glightbox-mobile 
  .glightbox-container 
    .gslide-title
      color: #fff;
      font-size: 1em;
    .gslide-description
      &:not(.without-desc)
        height: auto !important;
        width: 100%;
        position: absolute;
        bottom: 15px;
        padding: 19px 11px;
        max-width: 100vw !important;
        // order: 2 !important;
        max-height: 78vh;
        text-overflow: ellipsis;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, .75) 100%);
        transition: opacity .3s linear;
        padding-bottom: 50px;


/* media query */
@media screen and (min-width: 769px) {
  .gslide-image img.zoomable {
    cursor: zoom-in;
  }
  .zoomed .gslide-image img.zoomable {
    cursor: grab;
  }
  .goverlay {
    background: rgba(0, 0, 0, .85);
  }
}
@media screen and (max-width: 769px){
  .gprev, .gprev *,.gnext, .gnext *{
    visibility: hidden;
  }
}

@media screen and (min-width: 992px) {
.gclose{
    right: 20px;
    top: 15px;
  }
}


/*CSS Animations*/

.gfadeIn
  animation: gfadeIn .5s ease;
  will-change: opacity, contents;

.gfadeOut
  animation: gfadeOut .2s ease;
  will-change: opacity, contents;

.gslideOutLeft
  animation: gslideOutLeft .3s ease;
  will-change: opacity, contents;

.gslideInLeft
  animation: gslideInLeft .3s ease;
  will-change: opacity, contents;

.gslideOutRight
  animation: gslideOutRight .3s ease;
  will-change: opacity, contents;

.gslideInRight
  animation: gslideInRight .3s ease;
  will-change: opacity, contents;

.gzoomIn
  animation: gzoomIn .5s ease;
  will-change: opacity, transform, contents;

.gzoomOut
  animation: gzoomOut .5s ease;
  will-change: opacity, transform, contents;

@keyframes lightboxLoader {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes gfadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes gfadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

@keyframes gslideInLeft {
  from {
    opacity: 0;
  }
  to {
    visibility: visible;
    opacity: 1;
  }
}

@keyframes gslideOutLeft {
  from {
    opacity: 1;
    visibility: visible;
  }
  to {
    opacity: 0;
    visibility: hidden;
  }
}

@keyframes gslideInRight {
  from {
    opacity: 0;
    visibility: visible;
  }
  to {
    opacity: 1;
  }
}

@keyframes gslideOutRight {
  from {
    opacity: 1;
    visibility: visible;
  }
  to {
    opacity: 0;
  }
}

@keyframes gzoomIn {
  from {
    opacity: 0;
    transform: scale(.3, .3);
  }
  to {
    opacity: 1;
  }
}

@keyframes gzoomOut {
  from {
    opacity: 1;
  }
  50% {
    opacity: 0;
    transform: scale(.3, .3);
  }
  to {
    opacity: 0;
  }
}


/* appended */
a.glightbox
  &:focus
    outline: theme-color solid 1px;

