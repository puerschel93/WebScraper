//@import "../../../common/css/variable.styl"
.trade-pro-plan-deal
  position relative
  width 600px
  height 300px
  .deal-entrust
    width 100%
    height 30px
    line-height 30px
    background $trade-pro-bg-title
    .select-button .trade
      min-width 150px
    .select-button ul li
      overflow hidden
      white-space pre
    span
      display inline-block
      height 100%
      padding 0 10px
      text-align center
      font-size 14px
      cursor pointer
      color $trade-font-normal
      border-top 2px solid $trade-pro-bg-title
    .entrust-active
      color $trade-pro-active
      border-top 2px solid $trade-pro-active
      background $trade-pro-model-bg
    .pop-parent
      position relative
      .pop-trade-children
        width 192px
        left -205px
        top -13px
        &.em-en
          top -24px
  .trade-deal-exchanged
    width 100%
    height 270px
    display flex
    justify-content space-between
    background $trade-pro-main-bg
  .deal-set-pwd
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    background $trade-deal-shadow
    z-index 6665
    .deal-pwd-detail, .deal-pwd-sure
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      width 506px
      height 266px
      padding 40px
      border-radius 6px
      background $trade-pro-bg-title
      z-index 6666
      .deal-pwd-title
        height 28px
        width 100%
        line-height 28px
        font-size 20px
        color $trade-font-normal
        display flex
        align-items center
        justify-content space-between
        em
          width 16px
          height 16px
          background $exchange-close-button
          background-size: contain
      .deal-pwd-content
        width 100%
        margin 0 auto
        background $trade-pro-bg-title
        display flex
        align-items center
        height 110px
        justify-content space-around
        color $trade-font-normal
        font-size 14px
        .pwd-radio
          -webkit-appearance none
          width 14px
          margin-right 8px
          &::before
            content "\a0" /*不换行空格*/
            display inline-block
            vertical-align middle
            width 14px
            height 14px
            background $trade-pro-radio-normal no-repeat center / 14px 14px
          //border-radius 50%
          //border 1px solid $trade-font-normal
          &:checked::before
            border none
            background $trade-pro-radio-select no-repeat center / 14px 14px
        //background-clip: padding-box;

        .choice
          display flex
          align-items center
          label
            font-size 14px
      .deal-set-sure
        width 100%
        height 48px
        display flex
        align-items center
        justify-content flex-end
        span, input
          display inline-block
          width 200px
          height 48px
          background $trade-pro-active
          color $trade-font-title
          font-size 16px
          text-align center
          line-height 48px
          border-radius 4px
          cursor pointer
    .deal-pwd-sure
      height 362px
      .deal-pwd-contentS
        width 100%
        height 206px
        padding-top 40px
        .set-pwd-msg
          font-size 14px
          color $trade-font-thead
          margin-bottom 20px
        h3
          font-size 14px
          color $trade-font-normal
          margin-bottom 10px
        .set-pwd
          width 100%
          height 48px
          line-height 48px
          padding-left 14px
          border 1px solid #E0E0E0
          font-size 14px
  .deal-pop
    .deal-pop-location
      top 50%
      left 50%
      transform translate(-50%, -50%)
      z-index 9999
  .deal-login-shadow
    top 0;
    width 8.2rem;
    position absolute;
    height 3.12rem;
    background rgba(30, 33, 32, 0.8);
    z-index 8888;
    text-align center
    line-height 3.12rem
    a
      color $trade-deal-setPass-color
      font-size .28rem
    span
      color $trade-font-title
      font-size .28rem
  .deal-exchange-pop
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 10000
    background rgba(0, 0, 0, .5)
    .deal-exchange-pop-detail
      position absolute
      width 560px
      height 316px
      top 50%
      left 50%
      transform translate(-50%, -50%)
      background: $trade-pro-bg-title
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.30);
      border-radius: 6px;
      padding 40px
      .deal-exchange-pop-title
        width 100%
        height 28px
        line-height 28px
        display flex
        justify-content space-between
        margin-bottom 40px
        h3
          color $trade-font-title
          font-size 20px
        em
          display inline-block
          width 16px
          height 16px
          background $exchange-close-button no-repeat center / 16px 16px
          cursor pointer
      .deal-exchange-pop-content
        p
          font-size 14px
          margin-bottom 26px
          span
            margin 0 10px 0 20px
            font-size 18px
          em
            font-size 14px
            color $trade-font-normal
        .deal-exchange-pop-button
          display flex
          justify-content flex-end
          margin-top 52px
          button
            border-radius 2px
            color $trade-font-title
            width 200px
            height 48px
            line-height 48px
            text-align center
            background $trade-pro-active
            cursor pointer
  .funpass-pop
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    background $trade-deal-shadow
    z-index 6665
    .funpass-pop-detail
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      width 560px
      height 324px
      padding 40px
      border-radius 6px
      background $trade-pro-bg-title
      z-index 6666
      .funpass-pop-title
        width 100%
        max-width 520px
        height 28px
        //display flex
        //justify-content space-between
        //align-items center
        h3
          float left
          font-size 20px
          color $trade-font-normal
          margin-top 4px
          &.h3-en
            max-width 100px
        .funpass-set
          float right
          height 100%
          line-height 28px
          font-size 12px
          .pop-parent
            margin-left 4px
            display inline-block
            vertical-align middle
            img
              position relative
              top 1px
              cursor pointer
            .pop-trade-children
              white-space nowrap
              top -35px
              left -104px
              width auto
              padding 5px 6px
          span
            margin 0 10px 0 3px
            color #979AA1
          .select-button
            .select-fund-en
              width 195px
          button
            position absolute
            top 15px
            right 15px
            width 14px
            height 14px
            background $exchange-close-button
            background-size: cover
            margin-left 20px
            cursor pointer
      .funpass-pop-input
        margin 40px 0 20px 0
        h4
          font-size 14px
          color $trade-font-normal
        input
          margin 10px 0
          width 100%
          height 48px
          border-radius 2px
          border 1px solid $trade-font-thead
          font-size 16px
          caret-color $trade-font-thead
          padding-left 10px
          color $trade-font-thead
        p
          text-align right
          a
            font-size 14px
            color $trade-pro-active
      .funpass-submit
        text-align right
        button
          width 200px
          height 48px
          border-radius 2px
          background $trade-pro-active
          color $trade-font-title
          font-size 16px
          cursor pointer