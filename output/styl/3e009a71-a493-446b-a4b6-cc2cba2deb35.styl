color_primary = rgb(255, 193, 7)
color_secundario = rgb(64, 81, 181)
color_base = rgb(239, 239, 239)
color_txt = rgb(66, 66, 66)
color_dark = #323232
color_dark_ligth = rgba(0, 0, 0, .12)
color_dark_middle = rgba(0, 0, 0, .6)
shadow_div = 0 2px 2px 0 rgba(0, 0, 0, .14), 0 3px 1px -2px rgba(0, 0, 0, .2), 0 1px 5px 0 rgba(0, 0, 0, .12)

a
  color color_txt
  text-decoration none

body
  background color_base
  color color_txt
  font-family "Helvetica Neue"
  font-size 14px
  line-height 16px
  margin 0

header
  background color_primary
  box-shadow 0 0 4px rgba(0, 0, 0, .14), 0 4px 8px rgba(0, 0, 0, .28)
  padding 0 5px
  nav
    display inline-block
    min-width calc(100% - 210px)
    max-width calc(100% - 210px)
    vertical-align bottom
    ul
      list-style none
      margin 0
      padding 0
      li
        cursor pointer
        display inline-block
        line-height 30px
        max-width 120px
        min-width 100px
        padding 10px
        text-align center
        a
          color rgba(66, 66, 66, .6)
        &.active
          color rgb(66, 66, 66)
          border-bottom 2px solid color_secundario
  .user
    display inline-block
    padding 0
    width 150px

input
  background color_base
  border none
  border-bottom 1px solid rgba(0, 0, 0, .12)
  margin 0 10px
  outline none
  padding 4px 0
  &:focus
    border-bottom 2.5px solid color_secundario

.body
  width calc(100% - 100px)
  margin 0 auto
  min-height 300px
  padding 10px 0

.btn
  color white !important
  background color_secundario
  border none
  border-radius 3px
  box-shadow shadow_div
  cursor pointer
  height 36px
  margin 10px 0
  min-width 60px
  padding 0 16px
  position relative
  text-align center
  text-transform uppercase
  vertical-align middle
  display block
  a, span
    color white !important
  &:active
    box-shadow 0 4px 5px rgba(0, 0, 0, .14), 0 1px 10px 0 rgba(0, 0, 0, .12), 0 2px 4px -1px rgba(0, 0, 0, .2)

.cards
  display flex
  flex-flow row wrap

.center
  margin auto

.item
  background white
  border 1px solid rgba(0, 0, 0, .2)
  border-radius 5px
  box-shadow shadow_div
  margin 10px 15px 5px 0
  min-height 150px
  position relative
  display flex
  flex-direction column
  width 250px
  .item_content
    min-height 118px
    padding 16px
    h1
      display inline-block
      font-size 20px
      line-height 25px
      margin 0
      vertical-align middle
      width calc(100% - 110px)
    img
      border-radius 35%
      display inline-block
      margin-right 10px
      max-width 60px
      vertical-align middle
    input
      background white
  .item_action
    border-top 1px solid rgba(0, 0, 0, .1)
    padding 8px

.login
  width 500px

.message
  background color_dark
  border-radius 4px
  position fixed
  bottom 0
  left 50%
  margin-right -50%
  z-index 10000
  display flex
  .message_txt
    padding 14px 24px
    vertical-align middle
    color white

.table
  background white
  border 1px solid color_dark_ligth
  border-radius 2px
  box-shadow shadow_div
  min-width 200px
  max-width 650px
  .row
    padding 24px
    border-bottom 1px solid color_dark_ligth
    display flex
    flex-flow row wrap
    .title
      min-width 200px
      max-width 250px
      padding-right 40px
      font-size 16px
    .txt
      color color_dark_middle