.main-navigation
	display flex
	justify-content center
	align-items center
	margin-bottom 0
	#main-nav-wrap
		display flex
		margin 0
		padding 0
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		z-index 99
		flex-direction column
		transform translateY(-250%)
		width 100%
		height 100%
		justify-content center
		align-items center
		background-color rgba(255,255,255,0.9)
		transition all .3s ease-in-out
		ul
			list-style none
			list-style-type none
			display flex
			flex-direction column
			justify-content center
			list-style none
			margin 0
			padding-left 0
			ul
				margin 0 0 0 15px
				ul
					left -999em
					top 0
				li
					&:hover > ul
					&.focus > ul
						left 100%
					a
						display flex
						align-items center
						&:before
							content 'â–·'
							margin-right 10px
							font-size 14px
					// uncomment next few lines to style the hover & focus states
					// :hover > a
					// .focus > a
					// a:hover
					// a.focus
			li:hover > ul
			li.focus > ul
				left auto
		li
			&:hover > a
			&.focus > a
				color $color__link-hover
		.nav-btn
			margin-left 10px
			a
				display block
				background #c7be68
				border-radius 5px
				padding 10px 20px
				color #fff
				font-size 22px
				font-weight 400
				text-align center
				&:hover
					color #fff
					background #b3ab5b
		a
			padding 0 1em
			color rgba(0,0,0,0.7)
			font-weight 100
			display block
			text-decoration none
			font-size 28px
			&.menu-item-clients
				& > svg
					color #ccc
		// uncomment next few lines to style current page links
		// .current_page_item > a
		// .current-menu-item > a
		// .current_page_ancestor > a
		#social-menu-head
			margin-top 2em
			ul
				flex-direction row
				.social-link
					&:first-child
						margin-right 10px
					a
						height 50px
						width 50px
						margin 0
						padding 0
						display flex
						justify-content center
						align-items center
						background rgba(0,0,0,0.2)
						border-radius 100%
						svg
							fill #fff
					&:hover
						a
							background rgba(0,0,0,0.1)
	.menu-toggle
		display block
		z-index 999
		width auto
		padding-left 20px
		padding-right 20px
		background transparent
		position absolute
		top 1em
		right .5em
		&:focus
			outline none
		&:hover
			background transparent
			.line
				background-color $color__link-hover
		.line
			width 50px
			height 5px
			background-color $color__link
			display block
			margin 8px auto
			transition all 0.3s ease-in-out
.main-navigation.toggled
	z-index 999
	.menu-toggle
		position fixed
		.line
			&:nth-child(2)
				opacity 0
			&:nth-child(1)
				transform translateY(13px) rotate(45deg)
			&:nth-child(3)
				transform translateY(-13px) rotate(-45deg)
	#main-nav-wrap
		transform translateY(0)
		position fixed
		transition all .3s ease-in-out

@media screen and (min-width 37.5em)
	.main-navigation
		margin-bottom 2em
		.menu-toggle
			display none
		#main-nav-wrap
			position relative
			width auto
			height auto
			display flex
			flex-direction row
			transform translateY(0)
			justify-content center
			align-items center
			background-color transparent
			transition all .3s ease-in-out
			ul
				flex-direction row
				flex-wrap wrap
				position relative
				justify-content space-around
				align-items center
				ul
					display none
					position absolute
					top 20px
				li
					a
						font-size 18px
						text-transform uppercase
						padding 0 1em
				li.page_item_has_children:hover
					ul
						display flex
						flex-direction column
				.nav-btn
					a
						font-size 16px
			#social-menu-head
				display none
	.main-navigation.toggled
		#main-nav-wrap
			position relative
			

.comment-navigation
.posts-navigation
.post-navigation
	.site-main &
		margin 0 0 1.5em
		overflow hidden
	& .nav-previous
		float left
		width 50%
	& .nav-next
		float right
		text-align right
		width 50%