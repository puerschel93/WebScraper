// import icon
@import '//at.alicdn.com/t/font_2410206_kxwb6og9m5.css'
/*修改文字字体*/
code,span,body{
    font-family:Simsun ;
}

/*隐藏导航栏标题文字*/
span.site-name.can-hide{
    width: 0px;height: 0px;overflow: hidden;
}

/*隐藏标题下方的阅读时间*/
.page-info{
    width: 0px;height: 0px;overflow: hidden;
}

/*隐藏首页头图及右侧文字*/
header.hero,.hero-info {
    width: 0px;height: 0px;overflow: hidden;
}

/*隐藏移动UA左侧侧边栏*/
button.sidebar-button {
    width: 0px;height: 0px;overflow: hidden;
}
.navbar {
    padding-left: 1.2rem !important;
}

/*隐藏配色模式切换按钮*/
div.links,button.color-button,button.color-button{
    width: 0px;height: 0px;overflow: hidden; 
}

/*标题样式*/
div.page-title{
    text-align: center;
}
.page .page-title h1{
    font: bolder 200%/1.6em fangsong;
}


/*背景图片*/
body {
    background: url(/background.png);
}
.page {
    background: #fff0 !important;
}

span {
    color: rgba(150,147,147,0.851);
}

h3 {
    color:#787777;
}

/*导航栏样式*/
.navbar{
    backdrop-filter: saturate(10%) blur(0px) !important;
    background: #fff0 !important;
    box-shadow: 0 0px 0px #0000001a !important;
}

/*顶栏logo*/
.navbar .logo {
    margin: 10px 0px 0px 10px;/*外边距（上 右 下 左）*/
}


