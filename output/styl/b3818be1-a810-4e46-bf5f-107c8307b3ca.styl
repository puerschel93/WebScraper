input.underline, select.underline, textarea.underline {
    background: none;
    text-decoration: none !important;
    border-bottom: 1px solid $dashboard-color-mid-light-grey;
    padding: 0 !important;
    height: 3.5rem !important;
}

input[type=number] {
    -webkit-appearance: none;
    -moz-appearance: textfield;
}

div[contenteditable=true]:not(.small){
    background: none;
    width: 100%;
    padding: 0
}

input.invalid, textarea.invalid, select.invalid {
    border: 2px solid #de4848 !important
}

input[disabled], select option[disabled] {
    background-color: rgba(255,255,255,0.5);
}

input[type="text"].border,input[type="select"].border,input[type="password"].border {
    border: 0.01rem solid $dashboard-color-mid-light-grey;
}

input[type=checkbox] {

    flex: none;
    position: relative;
    margin: 0 1.5rem 0 0 !important;
    width: auto;
    height: auto;
    vertical-align: middle;

    &:after {
        content:'';
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 1.25rem;
        height: 1.25rem;
        border-radius: 0.25rem;
        left: -2px;
        top: -0.3rem;
        background-color: $dashboard-color-light-grey;
        color: $dashboard-text-primary;
        font-size: 1.1em;
    }

    &.border {
        &:after {
            border: 0.01rem solid $dashboard-color-mid-light-grey;
        }
    }

    &:checked {
        &:after {
            content:'\2713';
            background-color: $dashboard-color-primary;
            color: $dashboard-text-white;
            // border: 1px solid $dashboard-color-primary;
        }
    }

    &.invalid:after {
        border: 2px solid #de4848 !important
    }

}

.array-item input[type=checkbox]{
    &:after  {
        background-color: white;
    }

    &:checked {
        &:after {
            content:'\2713';
            background-color: $dashboard-color-secondary;
            color: $dashboard-text-white;
            // border: 1px solid $dashboard-color-primary;
        }
    }
}

