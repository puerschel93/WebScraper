

label {
    font-size: 0.8rem;
    color: $dashboard-text-black;
    display: block;
    margin-bottom: 0.3rem;

    &.checkbox {
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        padding-top: 0.4rem;
        margin-bottom: 0;

        p {
            flex: 1;
        }
    }
}

input, select, textarea, date-picker .value {

    padding: 0 1.2rem;

    background-color: $dashboard-color-light-grey;
    border-radius: $border-radius;

    &.rounded {
        border-radius: $border-radius;
    }

    &.highlight,&.highlight:after {
        border: 1px solid $dashboard-text-primary !important;
    }
}


input[type=color]{
    padding: 0;
    overflow: hidden;

    &::-webkit-color-swatch-wrapper {
        padding: 0;
        border-radius: $border-radius
    }
}

.authentication {
    input, select, textarea, date-picker .value {
        background-color: white;
    }
}

.input-contenteditable-wrap {
    background-color: $dashboard-color-light-grey;
    border-radius: $border-radius;
}

