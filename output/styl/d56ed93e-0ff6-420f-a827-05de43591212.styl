.CoverForm
    text-align center
    color white
    background blue_logo
    border-bottom: 3px solid #d9bc29;
    
    &__box
        // background blue
        text-align center
        color white
        // height 50vh
        padding-top 13%
        background-image url('../images/cover-slider/Slider--1.jpg')
        background-size cover
        background-repeat no-repeat
        height 75vh
    
    &__title
        display inline-block
        vertical-align middle
        // background orange
        width 46%
        text-align left
        height: 36%;
        
        h2
            font-size 2.5rem
            text-shadow 2px 2px rgba(0, 0, 0, 0.11)
            font-family 'Montserrat-SemiBold', 'Arial', sans-serif;
        
        p 
            font-size 1.2rem
            padding-top: .5rem;
            
        &--circles
            padding-top: 8rem;
            
            span
                color: white;
                width: 12px;
                height: 12px;
                display: inline-block;
                background: transparent;
                text-align: center;
                border-radius: 50%;
                border 1.5px solid white;
                margin-right .5rem;
                cursor: pointer;
                
                article
                    background: transparent;
                    display: block;
                    height: 10px;
                    width: 10px;
                    border-radius: 50%;
                    margin: 0 auto;
                    margin-top: 1.1px;
        
    &__form
        display inline-block
        vertical-align middle
        background rgba(255, 255, 255, 0.12);
        border-radius 5px
        width 40%
        text-align left
        padding 33px
        
        &--input
            display block
            padding-bottom 1.1rem
            width 100%
            // overflow hidden
            
            .item
                display inline-block
                width 33%
                position: relative
                
                label
                    display block
                    padding-bottom .5rem
                    
                input
                    // display block
                    padding .7rem .8rem
                    font-size .8rem
                    width 70%
                    border 0
                    border-radius 5px
                    
                .counter
                    position: relative
                    
                    .counter__left
                        display inline-block
                        background gold_yellow
                        height 37px
                        width 20px
                        border-top-left-radius 5px
                        border-bottom-left-radius 5px
                        text-align center
                        position: absolute
                        left 0
                        top: 0;
                        
                        p 
                            padding-top .7rem
                        
                    .counter__right
                        display inline-block
                        background gold_yellow
                        height 37px
                        width 20px
                        border-top-right-radius 5px
                        border-bottom-right-radius 5px
                        text-align center
                        position: absolute
                        right 24px
                        top: 0;
                            
                        p 
                            padding-top .7rem
                    
                    .ws-number
                        text-align center

                select
                    width 85%
                    padding .7rem .8rem
                    font-size .8rem
                    height 38px
                    border 5px
                    outline:none; /* remove focus ring from Webkit */
                    // -webkit-appearance:none; /* remove the strong OSX influence from Webkit */
                    -webkit-border-radius: 6px;
                    -moz-border-radius: 6px;
                    border-radius: 6px;
                    
                /* Select arrow styling */
                select::after {
                    content: "â–¼";
                    position: absolute;
                    top: 0;
                    right: 0;
                    bottom: 0;
                    font-size: 60%;
                    line-height: 30px;
                    padding: 0 7px;
                    background: #bbb;
                    color: red;
                    
                    pointer-events:none;
                    
                    -webkit-border-radius: 0 6px 6px 0;
                    -moz-border-radius: 0 6px 6px 0;
                    border-radius: 0 6px 6px 0;
                }
                        
                .iconToDate 
                    position: absolute;
                    top: 30px;
                    right: 33px;
                    width: 14%;
                    
                    img 
                        max-width: 100%;
                        width: 100%;
                        
            // .input__margin
            //     margin-right 2rem
                
            .input__email
                width 66%
                
                #email
                    width 85%

            .btnCotizar
                width 28%
                
                button
                    padding 1rem 0.5rem
                    width 100%
                    border 0
                    color white
                    border-radius 5px
                    background gold_yellow
                    font-size 1rem
                    text-transform uppercase
                    text-align center
                    cursor pointer
                    // box-shadow rgba(255, 255, 255, 0.21) 1px 1px 1px

@media screen and (max-width 767px)
    .CoverForm
        width 100%
        &__box
            height auto
            padding 100px 0
        &__title
            padding 20% 0
            display block
            width 90%
            margin 0 auto 50px
            &--circles
                display none
        &__form
            display block
            width 90%
            margin 0 auto
            padding 10px
            box-sizing border-box
            // &--input
            //     .item
            //         width 90%
            //         text-align center
                

           .CoverForm__form--input .item
               display: block;
               width: 100%;
               position: relative;
               
               input
                    width: 93%;
                
               select
                    width: 100%;

               .counter .counter__right
                   right: -1px;
                   top: 0;
               
               .iconToDate
                    right: -9px;
                    
               .iconToDate img
                    width: 50%;

           .input__email #email
                width: 93%;
            
            .btnCotizar
                margin-top 1rem !important;
                
