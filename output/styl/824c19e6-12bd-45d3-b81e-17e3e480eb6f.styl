.image-slider
  position relative
  margin-bottom 25px
  .slide
    height 485px
    background-repeat no-repeat
    background-position 50% 50%
    background-size cover
    outline none
  .slick-arrow
    width: 25px;
    height: 25px;
    position absolute
    top 50%
    margin-top -(@height/2)
    text-indent -9999px
    border none
    z-index 10
    opacity .8
    anim()
    &:hover
      opacity 1
  .slick-prev
    left 25px
    background: url('../images/sprite.png') no-repeat -38px -405px;
  .slick-next
    right 25px
    background: url('../images/sprite.png') no-repeat -6px -405px;
.image-slider-nav,
.relative-video
  width 104%
  position relative
  left -2%
  margin-bottom 45px
  .slide
    height 120px
    padding-left 0.5%
    padding-right 0.5%
    outline none
    .image
      height 100%
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
      border-radius 10px
      border 1px solid $gray-bd
  .slick-arrow
    width: 20px;
    height: 20px;
    position: absolute;
    top: -45px;
    border: 1px solid #e2e2e2;
    background-color: #e8f0f4;
    text-indent: -9999px;
    border-radius: 50%;
    -webkit-transition: all 0.25s ease-out;
    -moz-transition: all 0.25s ease-out;
    transition: all 0.25s ease-out;
    &:after
      content: '';
      position: absolute;
      left: 50%;
      top: 50%;
      width: 4px;
      height: 7px;
      margin-left: -2px;
      margin-top: -4px;
    &:hover
      background-color: #24c2cb;
      border-color: #24c2cb;
  .slick-next
    right 2%
    &:after
      background: url("../images/sprite.png") no-repeat -151px -9px;
  .slick-prev
    right: 2%
    margin-right 30px
    &:after
      background: url("../images/sprite.png") no-repeat -140px -9px;
