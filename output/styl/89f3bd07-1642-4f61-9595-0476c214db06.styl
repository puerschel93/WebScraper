.layout
  display flex
  justify-content center
  width 100%
  height fit-content

.top
  margin-bottom 0 !important

.overview-wrap
  width 300px
  height 700px
  position relative
  margin-top 100px
  background #161a1d
  border-radius .3em
  box-shadow 0 5px 12px 5px rgba(0,0,0,0.1)
  border 1px solid #32333e
  overflow hidden
  .overview-content-wrap
    width 95%
    max-height calc(100% - 109px)
    margin 10px auto 0
    position relative
    overflow-y auto
    .overview-title
      color #bdbdbd
      font-size 20px
      text-align center
      margin 20px 0 10px
    .ticket-wrap
      width 100%
      height fit-content
      margin 40px 0
      .tickets-title
        width 100%
        height fit-content
        display flex
        justify-content center
        .number-of-tickets
          font-size 15px
          margin 0
          color grey
          margin-top 4px
          span.number
            font-weight 800
            font-size 18px
            color white
        .seat
          width 30px
          height 30px
          border-radius .2em
          position relative
          background red
          margin-right 10px
          .icon
            width 15px
            height 15px
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background-image url('/img/star.svg')
            background-size cover
            background-position top
            background-repeat no-repeat
    .seats-wrap
      width 70%
      margin 0 auto
      height fit-content
      position relative
      h3.seats-title
        color lightgrey
        text-align center
        margin 0 0 10px
      p
      p.none-selected
        color grey
        margin 0
        text-align center
      .seat-number-wrap
        background #1d2429
        width 100%
        height 30px
        position relative
        border-radius .3em
        margin-bottom 10px
        .seat-number
          position absolute
          margin 0
          color white
          top 50%
          left 50%
          transform translate(-50%, -50%)
        .seat-price
          color grey
          position absolute
          top 50%
          left 5px
          margin 0
          transform translateY(-50%)
          font-size 13px
  .purchase-wrap
    position absolute
    bottom 0
    left 0
    height fit-content
    padding 20px 0
    width 100%
    background #151A1C
    border-top #32333e 1px solid
    p.seat-info
      color grey
      text-align center
      margin 5px auto 10px
      font-size 12px
      max-width 80%
    p.total
      color grey
      text-align center
      font-size 15px
      font-weight 600
      margin 0 0 10px
      span.total-price
        color white
    .next-step
      width 180px
      margin 0 auto
      cursor pointer
      height 30px
      border-radius 200px
      background red
      position relative
      &.disabled
        background #717171 !important
        cursor not-allowed !important
        p
          color #dadada !important
        .arrow
          opacity 0 !important
      &:hover
        .arrow
          right 10px
          opacity 1
      p
        color white
        position absolute
        margin 0
        font-size 15px
        font-weight 800
        letter-spacing 0.5px
        top 50%
        left 50%
        transform translate(-50%, -50%)
      .arrow
        background-image url('/img/right-arrow.svg')
        background-size cover
        background-position center
        height 23px
        width 22px
        opacity 0
        position absolute
        top calc(50% + 2.5px)
        right 20px
        transform translateY(-50%)
        transition right .3s, opacity .3s



.outer-seat-wrap
  margin-top 50px
  width fit-content
  .legend
    display flex
    width fit-content
    height fit-content
    margin 0 auto
    .item-wrap
      width fit-content
      height fit-content
      margin 0 30px
      &.taken-wrap
        .seat
          .icon
            width 30px
            opacity 0.5
            height 30px
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background-image url('/img/close.svg')
            background-size cover
            background-position top
            background-repeat no-repeat
      &.ga-wrap
        .seat
          background grey
      &.vip-wrap
        .seat
          background grey
      &.selected-wrap,
      &.vip-wrap
        .seat
          .icon
            width 15px
            height 15px
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background-image url('/img/star.svg')
            background-size cover
            background-position top
            background-repeat no-repeat
      &.selected-wrap
        .inner-seat-wrap
          display flex
          .seat
            background red
      label
        color lightgrey
        text-align center
        font-size 13px
      .seat
        width 30px
        height 30px
        border-radius .2em
        margin 10px auto 0
        position relative
  .stage
    width 1400px
    height 100px
    border solid 5px lightgrey
    border-color lightgrey transparent transparent transparent
    border-radius 50%/100px 100px 0 0
    margin 20px auto 0
    position relative
    overflow hidden
    .fade
      width 1300px
      position absolute
      height 100px
      top -25px
      border-radius 50%/100px 100px 0 0
      background linear-gradient(rgba(255,255,255,0.1), #1d2429)
      left 50%
      transform translateX(-50%)
    h2.title
      color lightgrey
      text-transform uppercase
      font-weight 900
      letter-spacing 2px
      position absolute
      top calc(50% - 10px)
      font-size 17px
      margin 0
      left 50%
      transform translate(-50%, -50%)
  .seat-wrap
    width fit-content
    margin 0 auto
    height fit-content
    position relative
    .row
      display flex
      width 100%
      height fit-content
      justify-content: space-between;
      margin-bottom 30px
      .row-letter
        color white
        margin 6px 0 0
        font-weight 900
      .column
        margin 0 20px
        display flex
        .seat
          width 30px
          height 30px
          border-radius .2em
          margin 0 5px
          position relative
          cursor pointer
          background grey
          transition background .3s
          &.vip-seat
            .icon
              width 15px
              height 15px
              position absolute
              top 50%
              left 50%
              transform translate(-50%, -50%)
              background-image url('/img/star.svg')
              background-size cover
              background-position top
              background-repeat no-repeat
          &.taken
            background none !important
            cursor not-allowed
            .icon
              width 30px
              opacity 0.5
              height 30px
              position absolute
              top 50%
              left 50%
              transform translate(-50%, -50%)
              background-image url('/img/close.svg')
              background-size cover
              background-position top
              background-repeat no-repeat
          &.selected
            background red
