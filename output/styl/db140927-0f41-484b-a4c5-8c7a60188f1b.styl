.service
  position: relative;
  height: 741px
  margin-bottom: -43px
  @media media-lg
    height: 809px
  @media media-md
    height: auto;
    padding-top: 44px

  &__img
    position: absolute;
    pointer-events none
    anim(.2s);

    &--100
      position: absolute;
      top: 100%
      margin-top: -(251 - 68)px;
      bottom: -68px;
      left: 41px;
      z-index: 2
      @media media-lg
        top: 420px
        //left: 444px;
        left: 544px;
        width: 208px;
        height: auto;
        z-index: 3
      @media media-md
        display: none;

    &--primary
      position: absolute;
      bottom: 0
      //left: 350px
      //transform translateX(-50%)
      right: 230px
      @media media-lg
        bottom: 400px
        //left: 465px;
        right: -50px
        max-height: 480px;
        width: auto;
      @media media-md
        display: none;

    &--decor1
      left: 687px;
      bottom: 8px;
      @media media-lg
        display: none;

    &--decor2
      left: 308px;
      //bottom: -199px;
      top: 100%
      margin-top: -(394 - 199)px;
      @media media-lg
        display: none;

    &--decor3
      left: 482px;
      top: -26px;
      @media media-lg
        display: none;

    &--decor4
      left: -29px;
      //bottom: -40px;
      top: 100%
      margin-top: -113px
      @media media-lg
        display: none;

    &--decor5
      left: 50%
      margin-left: -81px;
      top: -16px;
      @media media-lg
        display: none;

  &__bg
    position: absolute;
    left: 40px;
    top: 55px;
    //left: 309px;
    //top: 249px;
    //transform: translate(-50%, -50%);
    //transform-origin: 50% 50%;
    transform-origin: 0 0
    @media media-lg
      //transform: translate(-50%, -50%) scale(.8);
      left: 70px;
      top: 60px;
      transform: scale(.8);
    @media media-md
      display: none;

  h1
    position: absolute;
    top: 11px;
    left: 36px;
    padding: 14px 0 0 40px
    font-size: 65px
    line-height: 1
    color: #ffffff
    //background: url(./img/sprite-service-bg.png);
    @media media-lg
      text-align: left;
      //background: url(./img/sprite-service-bg-md.png);
      top: 5px;
      left: 62px;
      font-size: 48px
      padding: 50px 0 0 44px
    @media media-md
      position: static;
      background: none
      width: auto;
      height: auto;
      color: #1a1a1a
      font-size: 30px
      line-height: 1.2
      text-align: center;
      padding: 0
      margin: 0 0 14px
      &:before, &:after
        content: ''
        display: block;
        background: url(./img/sprite-service-bg-sm.png)
        margin: 0 auto

      &:before
        margin-bottom: 12px

      &:after
        margin-top: 13px

  .h2
    position: absolute;
    transform rotate(-90deg)
    top: 234px;
    left: -157px;
    font-size: 27px
    color: #1a1a1a
    @media media-lg
      top: 191px;
      left: -128px;
    @media media-md
      transform: none
      position: static;
      left: auto;
      top: auto;
      text-align: center;
      padding: 0 20px
      line-height: 30px
      margin-bottom: 90px

  &__form
    position: absolute;
    right: 0
    top: 20px
    width: 420px
    text-align: center;
    padding: 181px 30px 0
    z-index: 2
    @media media-lg
      width: 605px;
      left: 82px;
      top: 400px;
      right: auto;
      padding: 44px 0 0
    @media media-md
      position: relative;
      top: auto;
      left: auto;
      width: 260px
      margin: 0 auto 48px
      padding: 0

    &:before
      position: absolute;
      content: ''
      background: url(./img/service-bg.png);
      width 642px
      height 872px
      top: -82px;
      left: -109px;
      pointer-events none
      @media media-lg
        background: url(./img/service-bg-md.png)
        width: 768px
        height: 642px
        top: -111px;
        left: -82px;
      @media media-md
        background: url(./img/service-bg-sm.png)
        width: 640px
        height: 742px
        top: -141px;
        left: -187px;

    form
      position: relative;
      z-index: 1
      display: flex;
      flex-direction column
      height: 460px
      @media media-lg
        height: 360px
      @media media-md
        height: 390px

      > *:last-child
        margin-bottom: auto;

    .input
      margin-bottom: 25px

  &__title
    font-size: 48px
    line-height: .75
    margin-bottom: 5px
    @media media-lg
      font-size: 36px
      line-height: 1
      margin-bottom: 2px
    @media media-md
      font-size: 24px
      line-height: 1.5
      margin-bottom: -4px

  &__subtitle
    font-size: 30px
    margin-bottom: auto;
    line-height: 1
    @media media-lg
      font-size: 24px
      line-height: 1.25
      margin-bottom: 57px
    @media media-md
      font-size: 18px
      line-height: 1.35
      margin-bottom: 43px

  &__button
    @media media-lg
      position: absolute;
      bottom: -27px
      left: 50%
      width: 356px
      transform: translateX(-50%)
    @media media-md
      position: static;
      transform: none
      width: 100%
      margin-top: 5px
