MakeFlexRowValue( gutter_width, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}flex-row-{gutter_width}{unit_name}{suffix}
    {
        margin-top: -( gutter_width * unit_value ) important;
        margin-left: -( gutter_width * unit_value ) important;

        display: flex important;
        flex-wrap: wrap important;
    }

    .{prefix}flex-row-{gutter_width}{unit_name}{suffix} > *
    {
        padding-top: gutter_width * unit_value important;
        padding-left: gutter_width * unit_value important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}flex-row-{gutter_width}{unit_name}-{media_query_name}{suffix}
            {
                margin-top: -( gutter_width * unit_value ) important;
                margin-left: -( gutter_width * unit_value ) important;

                display: flex important;
                flex-wrap: wrap important;
            }

            .{prefix}flex-row-{gutter_width}{unit_name}-{media_query_name}{suffix} > *
            {
                padding-top: gutter_width * unit_value important;
                padding-left: gutter_width * unit_value important;
            }
        }
    }

