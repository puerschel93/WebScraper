MakeFlexBasisValue( column_count, media_query_name_array = {}, prefix =, suffix =, important = )

    for column_index in 1 .. column_count

        .{prefix}flex-basis-{column_index}\\/{column_count}{suffix}
        {
            max-width: 100% * ( column_index / column_count ) important;

            flex-basis: 100% * ( column_index / column_count ) important;
        }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}flex-basis-{column_index}\\/{column_count}-{media_query_name}{suffix}
            {
                max-width: 100% * ( column_index / column_count ) important;

                flex-basis: 100% * ( column_index / column_count ) important;
            }
        }
    }

