#services-page
	#description
		padding-top: 7.6rem
		.sub-title
			font-weight: 400
		@media screen and (min-width: $screenSmall)
			.sub-title
				width: 100%
				margin: auto

	#service-table
		margin-bottom: 5rem
		width: 100%
		.services-titles
			display: none
		.services-slides
			width: 100%
		.service-image
			width: 100px
			height: 100px
			padding-top: 0.7rem
		.slide-header-container
			display: flex
			justify-content: center
			align-items: center
			padding: 0.5rem 1rem
			background-color: #f3f8ff
			.slide-left, .slide-right
				width: 3rem
				height: 3rem
				border-radius: 4px
				border: solid 2px #778ab4
				transition: border-color .3s ease
				svg
					width: 19px
					height: 16px
				&:hover
					border: solid 2px #576076
			.slide-left
				svg
					transform: rotate(180deg)
			.slide-header
				display: flex
				flex-direction: column
				justify-content: center
				align-items: center
				text-align: center
				font-weight: 400
				text-transform: uppercase
				font-size: 13px
				letter-spacing: 0.3px
		.slide-option
			display: flex
			justify-content: space-between
			align-items: center
			background-color: #fafafc
			border-top: solid 1px #e3eaf3
			padding: 1rem
			font-size: 13px
			font-weight: 400
			letter-spacing: 0.3px
			text-align: left
			color: #8492af
			&.footer
				justify-content: center
				padding: 0rem
				cursor: pointer
				background-color: #576076
				a	
					width: 100%
					padding: 1rem
					text-align: center
					color: white
					font-size: 16px
					letter-spacing: 0.3px
					font-weight: 400
				transition: background-color .3s ease
				&:hover
					background-color: #8492af
			&.button
				justify-content: center
				padding: 2rem 1rem
			.option-name
				padding-right: 2rem
				min-width: 65%
			.option-value
				min-width: 5rem
				text-align: right
			.option-checkbox
				min-width: 1rem
				min-height: 1rem
				border-radius: 50%
				opacity: 0.2
				background-color: #8492af
				&.checked
					opacity: 1
		@media screen and (min-width: $screenSmall)
			width: 90%
			max-width: 700px
			margin: 0 auto 5rem auto
			display: flex
			border-radius: 4px
			background-color: #f3f8ff
			border: solid 1px #e3eaf3
			.services-titles
				display: flex
				flex-direction: column
				flex: 1
				max-width: 18rem
				border-right: 1px solid #e3eaf3
				.title-option, .title-header
					background-color: #f3f8ff
					font-size: 13px
					font-weight: 400
					letter-spacing: 0.3px
					text-align: left
					color: #8492af
				.title-option
					padding: 1rem
					border-top: 1px solid #e3eaf3
				.title-header
					height: 161px
					padding: .5rem 1rem
					display: flex
					flex-direction: column
					justify-content: flex-end
				.title-option.last
					flex: 1
			.title-option, .slide-option
				height: 62px
				display: flex
				align-items: center
				&.button, &.footer
					height: auto
			.swipeshow
				flex: 1
				.slide-option
					justify-content: center
					.option-value
						text-align: center
					.option-name
						display: none
		@media screen and (min-width: $screenMedium)
			width: auto
			max-width: 970px
			.services-titles
				flex: 0
				min-width: 12rem
			.swipeshow
				.slides
					width: auto !important
					transform: none !important
				.slide
					width: 100%
					visibility: visible
					border-right: 1px solid #e3eaf3
					&:last-of-type
						border-right: none
			.slide-left, .slide-right
				display: none

#service-page
	header
		background: transparent

	#landing
		padding-top: 3rem
		height 20rem
		position: relative
		background-image url('/photos/landing.jpg')
		background-size: 1200px
		background-position: 50% 25%
		background-repeat: no-repeat
		@media screen and (min-width: $screenSmall)
			background-size: cover

	#description
		padding: 2rem 1rem 4rem 1rem
		.title
			font-size: 24px
			text-align: left
			color: #0e1a35
		.sub-title
			text-align: left
		@media screen and (min-width: $screenSmall)
			position: relative
			.container
				padding-right: 20rem
				width: 100%
				.title
					font-size: 48px
					line-height: 1
					color: #0e1a35
				.sub-title
					font-size: 18px
					line-height: 1.33
					&.result
						margin: 2rem 0
			.service-image
				position: absolute
				right: 0
				bottom: 0
				margin: auto
				height: 90%
				width: 22rem
				background-repeat: no-repeat
				background-size: cover
				&.outsource
					background-image: url('/images/png/outsource.png')
				&.outstaff
					background-image: url('/images/png/outstaff.png')
				&.relocation
					background-image: url('/images/png/relocation.png')
		@media screen and (min-width: $screenMedium)
			.container
				width: 772px
				margin: auto
				padding-right: 13rem
			.service-image
				width: 30%
			.sub-title
				width: auto
		@media screen and (min-width: $screenLarge)
			.container
				padding-right: 7rem
			
	#workflow
		padding: 2rem 0
		background-color: #0e1a35
		font-size: 14px
		font-weight: 400
		letter-spacing: 0.3px
		color: #8492af
		&.desktop
			display: none
		h1
			font-size: 18px
			font-weight: 300
			letter-spacing: 0.4px
			text-align: left
			color: #fefefe
		ul
			list-style-type: none
			padding: 0 2rem
			li
				position: relative
				padding: .5rem 0 .5rem 1.5rem
				&:before
					content: ''
					position: absolute
					top: 0
					bottom: 0
					left: -0.5rem
					margin: auto
					width: 1rem
					height: 1rem
					border-radius: 50%
		.color-1
			&:before, .ball, .arrow, .arrow:after
				background-color: #e25245
			.workflow-item
				border-color: #e25245
		.color-2
			&:before, .ball, .arrow, .arrow:after
				background-color: #cb5056
			.workflow-item
				border-color: #cb5056
		.color-3
			&:before, .ball, .arrow, .arrow:after
				background-color: #b74e65
			.workflow-item
				border-color: #b74e65
		.color-4
			&:before, .ball, .arrow, .arrow:after
				background-color: #a44c73
			.workflow-item
				border-color: #a44c73
		.color-5
			&:before, .ball, .arrow, .arrow:after
				background-color: #8f4b82
			.workflow-item
				border-color: #8f4b82
		.color-6
			&:before, .ball, .arrow, .arrow:after
				background-color: #794992
			.workflow-item
				border-color: #794992
		.color-7
			&:before, .ball, .arrow, .arrow:after
				background-color: #6b479d
			.workflow-item
				border-color: #6b479d
		.color-8
			&:before, .ball, .arrow, .arrow:after
				background-color: #5b46a8
			.workflow-item
				border-color: #5b46a8
			
		@media screen and (min-width: $screenSmall)
			&.mobile
				display: none
			&.desktop
				display: block
				.container
					max-width: 900px
				.workflow-header
					display: flex
					justify-content: center
					margin-top: 2rem
					margin-bottom: 4rem
					h1
						padding: 0 6rem
				&.visible
					.workflow-row
						for items in 1..10
							&:nth-child({items})
								animation: appearToTop .5s .3s*items linear forwards
				.workflow-row
					display: flex
					opacity: 0
					.workflow-item
						position: relative
						width: 50%
						padding: 1.5rem 1rem
						margin: 1rem 0
						.ball
							position: absolute
							width: 1rem
							height: 1rem
							border-radius: 50%
							top: -1.5rem
						.text
							position: absolute
							top: -1rem
							transform: translateY(-50%)
						.arrow
							top: -1rem
							transform: translateY(-50%)
							width: 4rem
							height: 1px
							position: absolute
							&:after
								content: ''
								position: absolute
								width: 5px
								height: 5px
								border-radius: 50%
								top: -2px
					&.right
						justify-content: flex-end
						.workflow-item
							border-left-width: 1px
							border-left-style: solid
						.text
							left: 6rem
							text-align: left
						.ball
							left: 0
							transform: translateX(-50%)
						.arrow
							left: 1rem
							&:after
								left: 0
								
					&.left
						justify-content: flex-start
						.workflow-item
							right: -1px
							border-right-width: 1px
							border-right-style: solid
						.text
							right: 6rem
							text-align: right
						.ball
							right: 0
							transform: translateX(50%)
						.arrow
							right: 1rem
							&:after
								right: 0
					
	#result
		padding: 2rem 0 4rem 0
		background-color: #f3f8ff
		border: solid 1px #e3eaf3
		text-align: center
		h2
			width: 90%
			padding-bottom: 1rem
			margin: auto
		@media screen and (min-width: $screenSmall)
			h2
				padding-bottom: 2rem
				width: 35rem