.main-container
    max-width 1200px
    margin auto
    @media screen and (max-width $screen-xs-max)
        width 100%
    @media screen and (min-width 1024px)
        width 100%

    .rich-text
        h2
            font-size $h3
            margin-bottom 30px
            @media screen and (max-width $screen-xs-max)
                font-size $mobile-h2
                margin-top 0

.news-listing-bg
    background url(/static/img/Background_News@2x.jpg)
    background-size contain

.news-list
    background url(/static/img/GreenLeaves_BottomRight.png) no-repeat bottom -70px right -20px $white
    background-size 18%
    @media screen and (max-width $screen-xs-max)
       background url(/static/img/GreenLeaves_BottomRight.png) no-repeat bottom -40px right -20px $white
       background-size 50%

    @media screen and (max-width $screen-sm-max) and (min-width $screen-xs-max)
       background url(/static/img/GreenLeaves_BottomRight.png) no-repeat bottom -40px right -20px $white
       background-size 30%

.news-listing
    position relative
    margin 0 auto
    @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
        margin 0

    .bgImg
        height 296px
        background-size cover
        background-repeat no-repeat
        background-position center center
        position relative
        @media screen and (max-width $screen-xs-max)
            height 230px
    .news-listing-card
        box-shadow 0 8px 20px 0 rgba(0, 0, 0, 0.3)
        height 502px
        width 360px
        border-top #989898 solid 5px
        background $white
        padding 0
        margin-bottom 65px
        @media screen and (max-width $screen-xs-max)
            height 421px
            margin-left 0px
            margin-right 0px
            width 100%
        @media screen and (min-width 768px) and (max-width 990px)
            width 330px
            margin-left 0
            margin-right 0
            margin-bottom 30px
        @media screen and (min-width 991px) and (max-width 1024px)
            width 300px
            margin-bottom 30px
    .title
        font-size 22px
        font-weight $font300
        margin 20px 20px 0px 20px
        line-height normal
        @media screen and (max-width $screen-xs-max)
            font-size $CTA-copy

    .readMore
        a
            button-2()
            border solid 1px #9b9b9b
            position absolute
            bottom 30px
            left 0
            right 0
            margin 0 auto
            text-decoration none
            text-align center
            line-height 40px
            font-size $CTA-copy

.SocialShareBtnContainer
    >div
        display inline-block


.header
    text-align center
    font-size $h2
    font-weight $font300
    color $live-green
    margin-bottom 30px


.see-more
    font-size $small-sub-heading
    color $live-green
    display block
    margin 0 auto
    margin-bottom 70px
    text-decoration none
    text-align center
    &:hover
        text-decoration none
    &:after
        content ""
        background url(/static/img/Default_Chevrons_Down_DrkGreen@2x.png) no-repeat
        width 18px
        height 10px
        background-size cover
        display block
        margin 0 auto

.rich-text
    p
        font-size $small-sub-heading
        font-weight $font300
        @media screen and (max-width $screen-xs-max)
            font-size $mobile-h4

.center-aligned
    display block
    margin 0 auto
    float none

/* social media icon styles */
.social-share-icon
    display block
    width 300px
    margin 0px auto 70px auto
    float none
    text-align center
    @media screen and (max-width $screen-xs-max)
        margin 30px auto 30px auto
    g
        font-size 20px
        circle
            background transparent
            fill-opacity 0

.inlineShareTxt span
    margin-right 20px

.article-detail
    
    .main-form
        overflow hidden

    //details page banner section styles
    .news-detail-baner
        padding 0
        float none
        height auto
        .image-block
            padding 0
            border 0
            margin 0
            box-shadow none
            overflow hidden
            width 100%
            height 540px
            &:after
                position absolute
                width 100%
                left 0
                right 0
                top 0
                bottom 0
                content ''
                background rgba(0,0,0,0.2)
            @media screen and (max-width $screen-sm-max)
                height 250px


            img
                width 100%
                height 100%
            & + .richtext
                position absolute
                top 0
                left 0
                right 0
                bottom 0
                font-size $h2
                color $white
                width 60%
                position absolute
                top 50%
                transform translateY(-50%)
                margin 0 auto
                text-align center
                padding 0 25px

                @media screen and (min-width $screen-xs)
                    padding 0 50px

                h1
                    font-size $mobile-h4

                    @media screen and (min-width $screen-xs)
                        font-size $h6

                    @media screen and (min-width $screen-sm)
                        font-size $h3

                    @media screen and (min-width $screen-md)
                        font-size $h2
    .center-aligned
        float none
        margin 0 auto
        padding 30px 25px

        @media screen and (min-width $screen-xs)
            padding 45px 12% 30px 12%

        @media screen and (min-width $screen-md)
            padding 60px 0 0 0

    .published-date
        width 100%
        text-align center
        color $dark-grey
        font-size $small-sub-heading
        font-weight $font500
        margin 40px 0 30px 0
        span
            text-transform capitalize

    .social-share-icon
        width 100%
        svg
            display none

        .SocialMediaShareButton--facebook
            width 34px
            height 38px
            background url(/static/img/facebook@2x.png.png) no-repeat center center
            background-size 100%
            margin 0 20px 0 0
            position relative
            top 10px

        .SocialMediaShareButton--twitter
            width 34px
            height 38px
            background url(/static/img/pinterest@2x.png.png) no-repeat center center
            background-size 100%
            margin 0 20px 0 0
            position relative
            top 10px

        .SocialMediaShareButton--pinterest
            width 34px
            height 38px
            background url(/static/img/twitter@2x.png.png) no-repeat center center
            background-size 100%
            margin 0 20px 0 0
            position relative
            top 10px

    .main-container
        background-image url('/static/img/GreenLeaves_BottomRight@2x.png')
        background-repeat no-repeat
        background-size 60%
        background-position bottom -36px right -16px
        width auto
        max-width none
        margin-left -15px
        margin-right -15px
        overflow hidden

        @media screen and (min-width $screen-xs)
            background-size 300px
            background-position bottom -70px right -16px

@media screen and (min-width $screen-sm-max)
    .article-detail
        .SocialMediaShareButton--facebook:hover
            background url(/static/img/Facebook_Colour.png) no-repeat center center

        .SocialMediaShareButton--twitter:hover
            background url(/static/img/Pinterest_Colour.png) no-repeat center center

        .SocialMediaShareButton--pinterest:hover
            background url(/static/img/Twitter_Colour.png) no-repeat center center
