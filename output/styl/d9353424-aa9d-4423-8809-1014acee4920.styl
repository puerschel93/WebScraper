$red = #F15854;
$gray = #4D4D4D;
$blue = #5DA5DA;
$yellow = #DECF3F;
$purple = #B276B2;
$orange = #FAA43A;
p
    color #000
.fundraising
    margin-top 90px
    .chart
        transform: rotate(20deg)
        background:
            conic-gradient(#BFCECE 0.1%,
            $gray 0
            )
        height 366px
        width 366px
        border #ccc solid 23px;
        border-radius: 50%;
        // padding-top: 28%;
        float: left;
        padding-right: 20px;
    .anotation-chart
        height 110px
        width 100%
        .line
            position absolute
            width: 420px;
            height: 4px;
            margin: 0 3px;
            top: 50px;
            background: #bebdbd
            @media (max-width:1215px)

                display none

        p
            text-align: center
            width 100%
            height 28px
            margin: 0
            font-family Roboto
            font-style normal
            font-weight normal
            font-size 24px
            line-height 28px
            color #000000
        &:nth-child(1)
            .line
                top 15px
                left -160px
        &:nth-child(2)
            .line
                top 120px
                left 0
    &:nth-child(2)
        div
            height 130px
            border-radius: 65px
            background #FFF7F5
    &:nth-child(7)
        margin-top 75px
        height 40px
        p
            width 100%
            border-radius 30px
            font-size 26px
            line-height 30px
            margin 0
            padding 16px
            background #DFE7E7
    &:nth-child(8),
    &:nth-child(9)
        .round
            width: 183px
            max-width: 183px
            flex 0 0 183px
            height: 184px
            border: 10px solid #ECECF0;
            box-sizing: border-box;
            border-radius 50%
        p
            margin-left 9px
            font-size 24px
            line-height 28px
            color #000000
    &:nth-child(10)
        margin-top 20px

        p
            border-radius 70px
            background #BFCECE
            font-size 18px
            line-height 21px
            text-align center
            padding 29px 56px
            color #000000
    &:nth-child(11)
        margin-top 20px
        p
            border-radius 30px
            background #E1CECB
            font-size 18px
            line-height 21px
            text-align center
            padding 8px
            color #000000
    &:nth-child(8)
        .round
            display flex
            background: #42466D;
            .line
                position absolute
                background #FFFFFF
                height 14px
                border-radius  15px
                &:nth-child(1)
                    width 87px
                    top 44px
                    left 48px
                &:nth-child(2)
                    width 38px
                    top 61px
                    left 18px
                &:nth-child(3)
                    width 87px
                    top 85px
                    left 48px
                &:nth-child(4)
                    width 63px
                    top 108px
                    left 18px



    &:nth-child(9)
        .round
            background: #B35047;
            padding 56px 26px
            .money
                width: 117px;
                height: 53px;
                background: #fff
                .zero
                  background: #B35047
                  border-radius 50%
                  width 28px
                  height 38px
    a

        font-size: 24px;
        line-height: 28px;
        color: #000000
        padding 18px 34px
        background: #BFCECE
        border-radius: 50px
        text-decoration: none
        text-align: center
        &:hover
            background: #BFCECE50
            transition: 0.3
    .description
        display inline
        @media (min-width:1215px)
            display none

.smalltext
    margin-top 9px
    p
        width 100%
        border-radius 30px
        font-size 14px
        line-height 16px
        margin 0
        padding 16px


