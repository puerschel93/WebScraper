/*-----------------------------------------------------------------------------
 *  SECTION: calc
 * ------------------------------------------------------------------------- */
.s-calc
    background-color #2b2656
    background-repeat no-repeat
    background-position center
    background-size cover
    color #fff

    &__body
        padding 100px 0 125px
        position relative
        @media md
            padding 50px 0 30px
        @media sm
            padding 30px 0

    &__decor
        position absolute
        top 0
        left 0
        width 74px
        height 81px
        @media md
            height: 45px
        @media sm
            display none

    .b-title
        color #fff

.b-calc
    background-color rgba(color-base, 0.9)
    color color-main
    border-radius 30px
    padding 50px 60px
    @media sm
        padding 15px 30px

    &__section
        padding 20px 0
        border-bottom 2px solid #8570b1
        @media sm
            padding 15px 0

    &__group
        margin 0 -15px 30px
        @media sm
            margin-bottom 15px

        & > .col
            padding 0 15px

    &__footer
        padding 50px 0 0
        vertical-align middle
        color #fff
        @media sm
            padding 15px 0 0
        p
            font-family font-heuristica
            vertical-align middle
            font-size rem-calc(18px)
            line-height rem-calc(30px)

            strong
                font-size rem-calc(22px)
                font-weight 400
                @media sm
                    font-size 1rem

        .row
            padding-top 35px
            @media sm
                padding-top 15px

    &__total
        display inline-block
        background-color color-two
        color #fff
        padding 10px 15px 5px
        border-radius 5px
        margin-left 5px
        @media sm
            padding 7px 15px 2px

    &__control
        display inline-block
        color color-main
        background-color lighten(#ffca28, 30%)
        border 1px solid alpha(#fff, 0.2)
        padding 13px 15px 10px
        border-radius 5px
        margin-left 5px
        cursor pointer
        @media sm
            padding 10px 15px 6px

    &__button
        padding 15px 25px 12px
        font-size rem-calc(18px)
        box-shadow 0 0 18px 0 rgba(#fff, 0.4)
        &:hover
            background-color rgba(#fff, 0.4)

    &__note
        font-size rem-calc(12px)
        line-height 1.6
        color #fff
        @media sm
            padding-top 15px

.b-calc-tabs
    display flex
    justify-content space-between
    border-bottom 2px solid #fff
    margin-bottom 15px
    @media md
        text-align center
    @media sm
        flex-direction column

    &__item
        flex-grow 1
        padding 15px 15px 15px
        border-radius 6px 6px 0 0
        cursor pointer
        font-family font-heuristica
        font-size rem-calc(22px)
        color #fff
        position relative
        &:after
            content ''
            display block
            width 0
            height 0
            border-style solid
            border-color transparent
            border-width 0 (43/2)px 12px
            position absolute
            bottom -2px
            left 15%
            @media sm
                display none
        @media sm
            padding 10px
            margin-bottom 10px
            border-radius 50px
            background-color transparent
            font-size 1.2rem

        &.active
            background-color #fff
            color rgba(color-base, 0.9)
            &:after
                border-bottom-color rgba(color-base, 0.9)

            @media sm
                background-color #fff


.b-calc-name
    font-size rem-calc(20px)
    padding 8px 0
    line-height 1.6
    color #fff
    @media md
        font-size: 1.1rem

    &__note
        display block
        padding-top 5px
        font-size rem-calc(12px)

.b-calc-input-label
    display inline-block
    color #fff
    margin-top: 16px
    @media sm
        margin-top: 0
        margin-bottom: 6px

.b-calc-radio
    display inline-block
    position relative
    color #fff
    cursor pointer

    &:hover &__img
        opacity 1

    &__help
        position absolute
        top 0
        right 15px
        z-index 1
        @media xs
            right 0
        .icon
            transition all 0.2s linear

        &:hover .icon
            fill #ffca28

    &__input
        position absolute
        top 0
        left 0
        visibility hidden
        opacity 0

        &:checked
            & ~ .b-calc-radio__img
                opacity 1
            & ~ .b-calc-radio__label
                background-color color-two

    &__img
        display block
        width 100%
        height 50px
        background-repeat no-repeat
        background-position center
        background-size contain
        margin-bottom 15px
        opacity 0.5
        transition all 0.2s linear

    &__label
        display block
        width 100%
        text-align center
        border-radius: 50px
        padding 13px 35px 12px
        margin-bottom 10px
        transition all 0.2s linear
        @media sm
            padding 13px 20px 12px

    &__note
        display block
        width 100%
        font-size rem-calc(12px)
        text-align: center
        line-height 1.6
        padding 0 30px
        color #fff

.b-calc-checkbox
    display block
    position relative
    cursor pointer
    color #fff
    padding-left 40px
    @media sm
        margin-bottom 15px

    &__input
        position absolute
        top 0
        left 0
        visibility hidden
        opacity 0

        &:checked ~ .b-calc-checkbox__checkbox .icon
            opacity 1
            visibility visible

    &__checkbox
        display inline-block
        margin-top -1px
        width 24px
        height 24px
        vertical-align middle
        border 1px solid #dcdcdc
        border-radius 4px
        transition all 0.2s linear
        position absolute
        top 50%
        left 0
        transform translateY(-50%)

        .icon
            position absolute
            top 50%
            left 50%
            transform translate(-50%,-50%)
            opacity 0
            visibility hidden
            transition all 0.1s linear

.b-calc-select
    display block
    min-width 190px
    background-color color-two
    padding 13px 50px 12px 35px
    border-radius: 50px
    appearance none
    background-repeat no-repeat
    background-position 80% center
    background-image url(base-img-path+'icons/select.png')
    cursor pointer
    color #fff
    &::-ms-expand
        display none
    @media sm
        padding 13px 20px 12px

.b-calc-input
    display block
    width 100%
    position relative

    &.clear
        .icon
            opacity 1
            visibility visible

    &.loading
        position relative
        &:before
            content ''
            display block
            width 20px
            height 20px
            background-repeat no-repeat
            background-position center
            background-size contain
            background-image url(base-img-path+'icons/loading.png')
            position absolute
            top 12px
            right 15px
            transition all 0.2s linear
            animation rotate 2s ease-in-out infinite forwards
        input
            opacity 0.6

        .icon
            opacity 0
            visibility hidden

    &.error
        & ^[0]__input
            background-color rgba(color-error, 80%)
        & ^[0]__error
            opacity 1

        .icon
            fill color-main

    &__input
        display block
        width 100%
        padding 13px 50px 12px 35px
        background-color color-two
        border-radius: 50px
        color #fff
        position relative
        z-index 1
        &::placeholder
            color rgba(#fff, 0.6)
        @media sm
            padding 13px 20px 12px

    &__label
        display block
        color #fff
        padding 13px 50px 12px 35px
        background-color color-two
        border-radius: 50px
        @media sm
            padding 13px 20px 12px

    &__error
        color lightness(color-error, 80%)
        padding 10px 15px 0
        transition all 0.2s linear
        opacity 0
        position absolute
        top 40px
        left 0
        width 100%
        @media sm
            padding-top 3px
            font-size 0.8em

    & + .b-calc-input
        margin-top 15px

    & .clear-input
        display block
        cursor pointer
        width 24px
        height 24px
        fill color-error
        position absolute
        right 15px
        top 10px
        z-index 5
        opacity 0
        visibility hidden
        transition all 0.2s linear

    &--indent
        padding-bottom: 35px


.calc-slider
    .tns-inner
        margin: 0 25px

.map
    width 0
    height 0
    display none

@keyframes rotate {
    0% {
        transform rotate(0)
    }
    100% {
        transform rotate(360deg)
    }
}