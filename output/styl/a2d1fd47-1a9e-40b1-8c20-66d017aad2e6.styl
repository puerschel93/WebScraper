@import 'conform'

noisy-background-linear-gradient()
	background-image url("/images/noise.png"), -webkit-linear-gradient(arguments)
	background-image url("/images/noise.png"), -moz-linear-gradient(arguments)
	background-image url("/images/noise.png"), -ms-linear-gradient(arguments)
	background-image url("/images/noise.png"), -o-linear-gradient(arguments)
	background-image url("/images/noise.png"), linear-gradient(arguments)

html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, section, summary, time, mark, audio, video
	margin 0
	padding 0
	border 0
	font-size 100%
	font inherit
	vertical-align baseline

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section, summary
	display block

body > header, body > nav, body > footer, body #content > article, body #content > div > article, body #content > div > section, body nav.pagination
	padding-left 55px
	padding-right 55px

html
	background #252525 url("/images/line-tile.png") top left

h1, h1, h2, h3, h4, h5, h6
	font-family "PT Serif", "Georgia", "Helvetica Neue", Arial, sans-serif
	font-weight bold
	margin-bottom 1.0em

h1
	font-size 2.6em
	line-height 1.2em

a
	my-transition color 0.3s

p, blockquote, ul, ol
	margin-bottom 1.5em

body
	font-family "PT Serif", Georgia, Times, "Times New Roman", serif
	font-size 1.15em
	position relative
	margin 0 auto
	max-width 1200px
	line-height 1.5em
	color #222222

	> header
		background #333333
		font-size 1.3em
		padding-top 1.5em
		padding-bottom 1.5em

		h1
			margin 0
			font-size 2.2em
			font-weight normal
			line-height 1.2em

			a, a:visited, a:hover
				color #f2f2f2
				text-decoration none

		h2
			margin .2em 0 0
			font-size 1.0em
			color #aaaaaa
			font-weight normal
			font-family "PT Sans", "Helvetica Neue", Arial, sans-serif

	> nav
		font-size 0.9em
		position relative
		background-color #cccccc
		border-top 1px solid #f2f2f2
		border-bottom 1px solid #8c8c8c
		padding-top 0.35em
		padding-bottom 0.35em
		noisy-background-linear-gradient #e0e0e0, #cccccc, #b0b0b0

		&::after
			content ""
			display table
			clear both

		a
			text-shadow #ebebeb 0 1px
			float left
			text-decoration none
			font-size 1.1em
			line-height 1.5em
			color #6b6b6b
			font-family "PT Sans", "Helvetica Neue", Arial, sans-serif

			&:hover
				color #2b2b2b

		ul.subscription
			float right
			margin-left 0.5em

		ul
			overflow hidden
			display block
			padding-top 0.15em
			float left
			margin 0

			li
				list-style-image none
				list-style-type none
				white-space nowrap
				display inline
				float left
				padding-left 0

			li + li
				border-left 1px solid #b0b0b0
				margin-left 0.8em

			li + li a
				padding-left 0.8em
				border-left 1px solid #dedede

		form
			width 215px
			float right
			text-align left
			padding-left 0.8em

			.search
				width 93%
				font-size 0.95em
				line-height 1.2em
				padding 0.3em 0.5em 0
				border-radius 0.5em
				background-clip padding-box
				box-shadow #d1d1d1 0 1px
				background-color #f2f2f2
				border 1px solid #b3b3b3
				color #888888
				font-family "PT Sans", "Helvetica Neue", Arial, sans-serif

				&:focus
					color #444444
					border-color #80b1df
					box-shadow #80b1df 0 0 4px, #80b1df 0 0 3px inset
					background-color #ffffff
					outline none

	> footer
		font-family "PT Sans", "Helvetica Neue", Arial, sans-serif
		font-size 0.8em
		color #888888
		text-shadow #d9d9d9 0 1px
		background-color #cccccc
		noisy-background-linear-gradient #e0e0e0, #cccccc, #b0b0b0
		border-top 1px solid #f2f2f2
		position relative
		padding-top 1.0em
		padding-bottom 1.0em
		margin-bottom 3.0em
		border-radius 0 0 0.4em 0.4em
		z-index 1

		a, a:visited
			color #6b6b6b

		a:hover
			color #484848

		p:last-child
			margin-bottom 0

#main
	padding 0
	margin 0 auto
	background #f2f2f2 url("/images/noise.png") top left
	border-bottom 1px solid #bfbfbf

	&::after
		content ""
		display table
		clear both

#content
	margin-right 300px
	position relative
	background #f8f8f8 url("/images/noise.png") top left
	border-right 1px solid #e0e0e0

	&::after
		content ""
		display table
		clear both

	> div
		padding-top 27.5px
		padding-bottom 27.5px
		float left
		width 100%

	aside.sidebar
		color #4b4b4b
		text-shadow #ffffff 0 1px
		width 260px
		padding 1.2em 20px 20px
		background none
		clear none
		float left
		margin 0 -100% 0 0
		border-top 1px solid #eaeaea
		display block

		section
			font-size 0.8em
			line-height 1.4em
			margin-bottom 1.5em
			font-family "PT Sans", "Helvetica Neue", Arial, sans-serif

			h1
				margin 1.5em 0 0
				padding-bottom 0.2em
				border-bottom 1px solid #e0e0e0
				box-shadow #ffffff 0 1px
				font-size 1.7em
				font-weight bold
				line-height 1.2em

		section.first
			margin-left 0

		section.odd, section.even
			float none
			width auto

		a
			color inherit
			white-space pre-wrap
			word-wrap break-word

			&:hover
				color #1863a1

		ul
			margin-bottom 0.5em
			margin-left 0

			li
				list-style none
				padding 0.5em 0
				margin 0
				border-bottom 1px solid #e0e0e0
				box-shadow #ffffff 0 1px

#content .index
	article + article
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAABCAYAAACsXeyTAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAFUlEQVQIHWNIS0sr/v//PwMMDzY+ADqMahlW4J91AAAAAElFTkSuQmCC') top left repeat-x

	article header
		background none
		padding-bottom 0

	article > footer
		background none

article
	overflow hidden
	padding-top 1.0em

	.postContent
		li
			margin-left 2.0em

		pre
			line-height 1.0em
			tab-size 4

		h2
			font-size 1.8em
			padding-top 1.5em
			margin-bottom: 0.3em;

		strong
			font-weight bold

	header
		margin-bottom 1.5em
		padding-bottom 1.0em
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAABCAYAAACsXeyTAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAFUlEQVQIHWNIS0sr/v//PwMMDzY+ADqMahlW4J91AAAAAElFTkSuQmCC') bottom left repeat-x
		position relative
		padding-top 2.0em

		h1
			margin 0

			a
				color inherit
				text-decoration none

				&:hover
					color #1863a1
					text-decoration underline

		p.meta
			text-transform uppercase
			position absolute
			top 0
			font-family "PT Sans", "Helvetica Neue", Arial, sans-serif

		p
			font-size 0.9em
			color #aaaaaa
			margin 0

	> footer
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAABCAYAAACsXeyTAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAFUlEQVQIHWNIS0sr/v//PwMMDzY+ADqMahlW4J91AAAAAElFTkSuQmCC') top left repeat-x
		padding-bottom 2.5em
		margin-top 2.0em
		font-family "PT Sans", "Helvetica Neue", Arial, sans-serif

		p.meta
			margin-bottom 0.8em
			font-size 0.85em

		time::before
			content "\2022 "
			padding 0 0.4em 0 0.2em
			disply inline-block

section h1
	font-size 1.5em


body .gist .gist-file
	font-size 0.85em
	line-height 1.0em
	font-family "Terminus"
	
	.gist-data
		.data
			max-height 25.0em
			
		pre
			font-family monospace !important

.highcharts-container
	margin-bottom 1.5em

nav.pagination
	text-align center
	font-size 0.95em

	div
		position relative
		padding-top 1.5em
		padding-bottom 1.5em
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAABCAYAAACsXeyTAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAFUlEQVQIHWNIS0sr/v//PwMMDzY+ADqMahlW4J91AAAAAElFTkSuQmCC') top left repeat-x

		a
			text-decoration none
			color #aaaaaa

			&:hover
				color #1863a1

			&::after, &::before
				content "\2014"
				padding 0 0.3em

.archives
	color #aaaaaa

	h2:first-child
		padding-top 0.75em
		background none

	h2
		font-size 1.5em
		margin-bottom 0.3em
		font-weight normal
		display inline-block
		position relative
		top -1px
		float left
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAABCAYAAACsXeyTAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAFUlEQVQIHWNIS0sr/v//PwMMDzY+ADqMahlW4J91AAAAAElFTkSuQmCC') top left repeat-x
		padding-top 0.8em

	h1
		font-size 1.5em
		color #222222
		margin-bottom 0.3em

		a
			text-decoration none
			color inherit
			font-weight normal
			display inline-block

			&:hover
				color #1863a1
				text-decoration underline

	time
		position absolute
		text-align right
		left 0
		top 1.8em
		font-size 0.9em
		line-height 1.2em
		color #aaaaaa
		font-family "PT Sans", "Helvetica Neue", Arial, sans-serif
		text-transform uppercase

	article
		padding-left 4.5em
		padding-bottom 0.7em
		margin-left 5.0em
		position relative
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAABCAYAAACsXeyTAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAFUlEQVQIHWNIS0sr/v//PwMMDzY+ADqMahlW4J91AAAAAElFTkSuQmCC') bottom left repeat-x

		&:last-child
			background none