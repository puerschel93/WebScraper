html
	height: 100%
body
	height: 100%
	*
		box-sizing: border-box
		color: $dark
		fonts()
		letter-spacing: 0.03em
		font-family: 'Segoe UI', sans-serif

.global-wrap
	flex(column, nowrap, flex-start, stretch)
	min-height: 100%

.main-wrap
	flex-grow: 2

.site-size
	width: 1140px
	margin: 0 auto

.page-block
	padding: 18px 0 53px
	.page-title
		margin-bottom: 37px

.page-title
	margin: 0
	fonts(32px, 43px, 700)

.page-subtitle
	margin: 0
	fonts(32px, 43px, 600)

.block-title
	margin: 0
	fonts(24px, 32px, 700)

.block-subtitle
	margin: 0
	fonts(18px, 24px, 700)

.shop-title
	fonts(18px, 24px, 600)

.upper-title
	fonts(14px, 19px, 600)
	text-transform: uppercase

.site-text
	img
		max-width: 100%
		height: auto
		margin: 43px 0 0
	ul
		margin: 25px 0 0
		padding-left: 0
		list-style: none
	li
		position: relative
		padding: 0 0 0 42px
		&:not(:last-of-type)
			margin-bottom: 10px
		&::before
			content: ''
			position: absolute
			top: 4px
			left: 22px
			display: block
			width: 7px
			height: 12px
			background: url('./../img/little-arrow.png') 50% 50%/4px 7px no-repeat
	p
		margin: 17px 0 0
	.upper-title, h2
		margin: 37px 0 0

	// ui kit.
	h1
		margin: 0 0 25px
		fonts(32px, 43px, 700)
	h2
		margin: 0 0 20px
		fonts(32px, 43px, 600)
	h3
		margin: 0 0 20px
		fonts(24px, 32px, 700)
	h4
		margin: 0 0 15px
		fonts(18px, 24px, 700)
	h5
		margin: 0 0 15px
		fonts(18px, 24px, 600)
	h6
		margin: 0 0 10px
		fonts(16px, 21px, 600)


.site-list
	a
		position: relative
		padding: 0 0 10px 20px
		text-decoration: none
		&::before
			content: ''
			position: absolute
			top: 4px
			left: 0px
			display: block
			width: 7px
			height: 12px
			background: url('./../img/little-arrow.png') 50% 50%/4px 7px no-repeat
		&:hover
			color: $violet



.site-button, .small-button, .back-arrow-button
	display: inline-block
	border: none
	outline: none
	background-color: $dark
	color: $white
	text-decoration: none
	&:hover
		background-color: $violet
		cursor: pointer

.site-button
	padding: 10px 33px
	fonts(16px, 21px)
	box-shadow: 5.45455px 5.45455px 27.2727px rgba(0, 0, 0, 0.15);

.small-button
	padding: 9px 30px
	fonts(11px, 15px)
	box-shadow: 3.75839px 3.75839px 18.7919px rgba(0, 0, 0, 0.15);

.back-arrow-button
	position: relative
	padding: 10px 21px 10px 57px
	fonts(16px, 21px)
	box-shadow: 5.45455px 5.45455px 27.2727px rgba(0, 0, 0, 0.15);
	&::before
		content: ''
		position: absolute
		top: 50%
		left: 21px
		transform: translateY(-50%) rotate(180deg)
		display: block
		width: 27px
		height: 8px
		background: url('./../img/arrow-right-gray.png') 50% 50%/ 27px 8px no-repeat


.arrow-link, .small-arrow-link, .back-arrow-link
	position: relative
	display: inline-block
	border: none
	outline: none
	background: none
	text-decoration: none
	box-shadow: none
	&::after
		content: ''
		position: absolute
		top: 60%
		right: 0
		transform: translateY(-50%)
		display: block

.arrow-link, .back-arrow-link
	padding-right: 33px
	color: $dark
	fonts(16px, 21px)
	&::after
		width: 27px
		height: 8px
		background: url('./../img/arrow-right.png') 100% 50%/27px 8px no-repeat
	&:hover
		color: $violet
		&::after
			background-image: url('./../img/arrow-right-violet.png')

.back-arrow-link
	padding-right: 0
	padding-left: 33px
	&::after
		right: auto
		left: 0
		transform: translateY(-50%) rotate(180deg)

.small-arrow-link
	padding-right: 28px
	fonts(12px, 16px)
	color: $violet
	&::after
		width: 22px
		height: 6px
		background: url('./../img/small-arrow-right.png') 100% 50%/22px 6px no-repeat
	&:hover
		color: $d-violet
		&::after
			background-image: url('./../img/small-arrow-right-hover.png')

.small-link
	color: $gray
	fonts(12px, 16px)

.arrow-button, .slider-wrapping .arrow-button
	display: inline-block
	width: 33px
	height: 33px
	border: 1px solid $l-gray
	border-radius: 50%
	outline: none
	background: url('./../img/little-arrow.png') 50% 50%/5px 10px no-repeat transparent
	text-decoration: none
	box-shadow: none
	transition: all 0.3s ease
	&:hover
		background-color: rgba(125, 121, 228, 0.2)
		cursor: pointer
	&.left
		transform: rotate(180deg)

.site-icon
	display: inline-block
	width: 25px
	height: 25px
	border: none
	background-color: transparent
	outline: none
	box-shadow: none
	cursor: pointer

.site-checkbox
	display: none
	&:checked + .site-checkbox-label::before
		background: $dark

.site-checkbox-label
	position: relative
	display: inline-block
	padding-left: 17px
	color: $dark
	fonts(12px, 16px)
	cursor: pointer
	&::before
		content: ''
		position: absolute
		top: 3px
		left: 0
		display: block
		width: 8px
		height: 8px
		border: 1px solid $l-gray
		background: transparent
	&:hover::before
		background: $violet
	&.js-invalid
		border-color: $red

.site-input
	width: auto
	padding: 8px 16px
	border: 1px solid $l-gray
	border-top: none
	border-right: none
	border-left: none
	outline: none
	box-shadow: none
	&.js-invalid
		border-bottom-color: $red
	&:focus
		border-bottom-color: $dark


.breadcrumbs-block
	padding: 12px 0
	background-image: linear-gradient(to right, black 15%, rgba(128, 128, 128, 0) 0%)
	background-position: bottom
	background-size: 5px 1px
	background-repeat: repeat-x
	a, a span
		color: #818181
		text-decoration: none
		&:hover
			color: $dark
	a
		position: relative
		padding-right: 18px
		&::after
			content: ''
			position: absolute
			top: 50%
			right: 6px
			z-index: 1
			transform: translateY(-50%)
			display: block
			width: 4px
			height: 7px
			background: url('./../img/small-arrow.png') 50% 50%/4px 7px no-repeat
	span
		color: $dark
		fonts(10px, 13px)

.navigation-wrap
	flex(row, wrap, center, center)
	*:not(:last-child)
		margin-right: 47px

.stats-sort
	.select-wrapper
		input.select-dropdown
			width: 140px
.products-number
	.select-wrapper
		input.select-dropdown
			width: 50px
		li
			text-align: center
.select-wrapper
	position: relative
	z-index: 3
	display: inline-block
	&::after
		content: ''
		position: absolute
		top: 57%
		right: 5px
		transform: translateY(-50%) rotate(90deg)
		display: block
		width: 4px
		height: 7px
		background: url('./../img/little-arrow.png') 50% 50%/100% no-repeat
	svg, select
		display: none
	input.select-dropdown
		width: auto
		height: auto
		padding: 8px 23px 8px 13px
		margin-bottom: 0
		border: none
		outline: none
		background: transparent
		box-shadow: none
		fonts(12px, 16px)
		&:hover, &:focus
			border-bottom: none
		&:hover
			cursor: pointer
			color: $violet
		&.triangle::before
			content: ''
			position: absolute
			bottom: -6px
			left: 50%
			z-index: 3
			transform: translateX(-50%) rotate(45deg)
			display: block
			width: 8px
			height: 8px
			border: 1px solid #e8e8e8
			border-right-color: transparent
			border-bottom-color: transparent
			background: $white
	.dropdown-content
		position: absolute
		top: 100%!important
		left: 0!important
		z-index: 5
		transform: scale(0)
		width: 100%!important
		height: auto!important
		margin: 0
		padding: 18px 0
		border: 1px solid #e8e8e8
		box-shadow: none
		list-style: none
		background: $white
		li
			position: relative
			z-index: 2
			min-height: 0
			outline: none
			&:nth-of-type(n+2)
				margin-top: 6px
			&.selected
				background-color: transparent!important
				span
					text-decoration: underline
			&:hover
				cursor: pointer
				background-color: transparent
				span
					color: $violet
			span
				padding: 3px 13px
				color: $black
				fonts(12px, 16px)

.popup-wrap
	position: fixed
	top: 0
	left: 0
	z-index: 20
	flex(row, nowrap, center, center)
	width: 100%
	height: 100%
	background-color: rgba(0, 0, 0, 0.5)
	&:not(.active)
		display: none
.popup-body
	position: relative
	max-width: 90%
	max-height: 90%
	padding: 40px
	background: $white
	box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.17);
	overflow: hidden
	.image-wrap
		flex(row, nowrap, center, center)
		height: 100%
		overflow: hidden

.popup-close
	position: absolute
	top: 20px
	left: auto
	right: 20px
	transform: none
	width: 20px
	height: 20px
	border: none
	outline: none
	background: none
	font-size: 0
	cursor: pointer
	&::before, &::after
		content: ''
		position: absolute
		top: 50%
		left: 0
		display: block
		width: 100%
		height: 2px
		background: $gray
	&::before
		transform: translateY(-50%) rotate(45deg)
	&::after
		transform: translateY(-50%) rotate(-45deg)

.swiper-container .swiper-slide
	position: relative

.page-404
	text-align: center
	.navigation-wrap
		margin-top: 90px
.image-404
	flex(row, nowrap, center, center)
	width: 100%
	img
		max-width: 100%
		height: auto
		margin-right: 100px
		filter: grayscale(100%)

.js-none
	display: none

@media (max-width: 1180px)
	body .site-size
		width: 100%
		padding-right: 20px
		padding-left: 20px

@media (max-width: 768px)
	.site-text
		li
			padding-left: 20px
			&::before
				left: 5px
	.page-404
		.navigation-wrap
			margin-top: 40px
	.image-404
		img
			margin-right: 0

@media (max-width: 550px)
	.page-title
		fonts(24px, 29px, 700)

	.page-subtitle
		fonts(24px, 29px, 600)

	.navigation-wrap
		flex-direction: column
		*:not(:last-child)
			margin-right: 0
			margin-bottom: 20px
