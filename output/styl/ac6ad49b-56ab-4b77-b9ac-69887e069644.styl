#termine
    padding-top: 30px
    padding-bottom: 50px

#termine-block 
    text-align: left

.termin-entry
    padding-bottom 30px
    padding-top 30px
    border-bottom solid 2px cd-foreground
    display flex
    flex-direction: row-reverse
    justify-content: flex-end

    .entry-details
        width 50%
        padding-right 20px
        box-sizing: border-box
    .entry-picture
        flex-shrink: 4
        img
            max-width 100%
    h2
        font-size: 14pt
        font-weight: bold
        text-transform: uppercase
        margin-bottom 30px
        letter-spacing: 1.5pt

    .warning
        color cd-flash

@media screen and (max-width: 650px)

    .termin-entry
        flex-direction: column
        justify-content: flex-end

        .entry-details
            padding-top 20px
            width 100%
            padding-right 0
        .entry-picture
            width 100%
            flex-shrink: 0
            img
                max-width 100%
