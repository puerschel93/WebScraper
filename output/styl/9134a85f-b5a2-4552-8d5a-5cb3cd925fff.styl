.woocommerce-checkout{
    .entry-header{
        margin-bottom: 10px;
        text-align: center
    }

    .woocommerce-info{
        text-align: center;
    }

    .login-checkout ~p{
        max-width: 560px;
        margin: 0 auto 40px;
        height: 48px
        border-radius: 4px;
        background: #3C579D
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative
        &:after{
            content: 'Cadastrar com Facebook'
            color: #fff;
            font-weight: 600
        }
        img{
            position: absolute
            left 0
            right 0
            bottom: 0
            top: 0;
            width: 100%;
            height: 100%;
            opacity 0;
        }
    }

    .woocommerce-form-login-toggle{
        text-align: center;
        margin-bottom: 30px;
    }

    .woocommerce-form-login{
        max-width: 560px;
        margin: 0 auto;
        .form-row{
            display: block;
            width: 100%
            clear: both;
            float: none
        }
        button{
            width: 100%;
            height: 48px;
            border: none;
            background: #0d2d53;
            border-radius: 4px;
            font-size: 18px;
            font-weight: 600;
            color: #fff;
        }
        #logo-link{
            p{
                max-width: 560px;
                margin: 0 auto 40px;
                height: 48px
                border-radius: 4px;
                background: #3C579D
                display: flex;
                align-items: center;
                justify-content: center;
                position: relative
                &:after{
                    content: 'Entrar com Facebook'
                    color: #fff;
                    font-weight: 600
                }
                img{
                    position: absolute
                    left 0
                    right 0
                    bottom: 0
                    top: 0;
                    width: 100%;
                    height: 100%;
                    opacity 0;
                }
            }
        }
    }

    .woocommerce-form-coupon-toggle{
        margin: 2.617924em 0;
        .woocommerce-info{
            background: cor[0]
            padding: 1em 1.618em;
            margin-bottom: 2.617924em;
            margin-left: 0;
            border-radius: 2px;
            color: #fff;
            clear: both;
            border-left: .6180469716em solid rgba(0,0,0,.15);
            a{
                color: #fff
            }
            color: #fff;
        }
    }

    form {
        h3{
            clear: both;
            font-weight: 600;
            color: cor[0]
            font-size: 18px;
            text-transform: uppercase;
            margin: 0 0 .5407911001em;
        }
		.form-row {
            margin-bottom: 15px
			label {
				display: block;

				&.checkbox {
					display: inline;
				}
			}

			select {
				width: 100%;
			}

			.input-text {
				box-sizing: border-box;
				width: 100%;
			}
            .select2-container{
                z-index 0!important
            }
		}

		.form-row-first,
		.form-row-last {
			width: 47%;
			overflow: visible;
		}

		.form-row-first {
			float: left;

			/*rtl:raw:
			float: right;
			*/
		}

		.form-row-last {
			float: right;
		}

		.form-row-wide {
			clear: both;
		}

        .select2-container {
            .select2-selection{
                &--single,
                &__rendered{
                    height: 48px;
                    line-height: 48px
                    margin-bottom: 0
                }
                .icon{
                    }
            }

        }

	}

    .checkout_coupon{
        margin-bottom: 30px;
        &:after{
            content: '';
            display: block;
            clear: both;
        }
        .button{
            height: 35px;
        }
    }

    .woocommerce-NoticeGroup{
        margin-bottom: 30px;
        background: #e62e2e;
        padding: 15px;
        color: #fff;
    }



    .form-row label{
        font-weight: bold;
        font-size: 13px
    }

    // .input-text{
    //     padding: .6180469716em;
    //     background-color: #f2f2f2;
    //     color: #43454b;
    //     border: 0;
    //     -webkit-appearance: none;
    //     box-sizing: border-box;
    //     font-weight: 400;
    //     box-shadow: inset 0 1px 1px rgba(0,0,0,.125);
    //     margin-bottom: 15px;
    //     font-size: 15px;
    // }
    .select2-selection{
        margin-bottom: 15px;
        &--single{
            height: 35px;
        }
        .select2-selection__arrow{
            height: 33px;
        }
        .select2-selection__rendered{
            line-height: 35px;
        }
    }

    .woocommerce-checkout-review-order-table{
        margin-bottom: 20px;
        background: #f9f9f9
        th,
        td{
            text-align: left;
            padding: 15px;
            width: 50%
            font-size: 14px
            font-weight: 600
        }
        .order-total{
            th,
            td{
                font-size: 18px
                text-transform: up
            }
        }
    }
    .woocommerce-shipping-totals{
        background: #f1f1f1
        #shipping_method{
            li{
                margin-bottom: 10px
                padding: 10px
                background: #f8f8f8
                // color: #fff
            }
        }
    }
    .woocommerce-checkout-payment{
        .wc_payment_methods{
            margin-bottom: 20px;
        }
        .wc_payment_method{
            padding: 10px;
            background: #f8f8f8;
            margin-bottom: 5px;
            label{
                display: flex;
                align-items: center;
                font-size: 15px;
                font-weight: bold;
                img{
                    margin: 0 0 0 5px;
                }
            }
            // input{
            //     display: none;
            // }
            .payment_box{
                background: #d1d1d1;
                padding: 5px;
                margin-top: 10px;
                font-size: 15px;
            }
        }
        .woocommerce-terms-and-conditions-wrapper{
            margin-bottom: 20px;
        }
        .button{
            height: 50px;
            font-size: 18px;
        }
    }

    .woocommerce-checkout-payment{
        .button{
            width: 100%;
            height: 48px;
            background: #ca2f63;
            color: #fff;
            font-size: 18px;
            font-weight: 600;
            border: none;
            border-radius: 4px;
        }
    }

    @media (min-width: 768px){
        #customer_details {
            width: 47.8260869565%;
            float: left;
            margin-right: 4.347826087%;
            .col-1,
            .col-2{
                width: 100%;
                margin-bottom: 30px;
            }
        }
        #order_review_heading, 
        #order_review{
            width: 47.8260869565%;
            float: right;
            margin-right: 0;
            clear: right;
        }
    }
}