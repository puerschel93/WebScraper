.decoration
  &_type
    &_1
      position absolute
      left 10px
      top 100%
      bottom 0
      margin -39px -7px 0
      display flex
      flex-flow column
      align-items center
      pointer-events none
      &:before
        content ''
        square 14px
        border 3px solid white
        border-radius 50%
        flex none
        display block
      &:after
        content ''
        flex 1 1 auto
        border-left 1px solid rgba(#89879a, 0.4)
        display block
