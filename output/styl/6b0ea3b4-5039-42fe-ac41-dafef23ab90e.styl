@critical
  .menu
    position: fixed
    visibility: hidden
    opacity: 0

.menu
  //overflow-y: auto
  //overflow-x: hidden
  overflow: hidden;
  z-index: 11
  left: 0
  top: 0
  width: 100vw
  height: 100vh
  background: url(../../images/mountains.jpg) 50% 100% repeat-x, #ffffff
  will-change transform
  anim(.2s)
  //@media (max-width: $breakpoint-lg - 1)
  //  overflow: hidden;

  &--active
    visibility: visible
    opacity: 1
    filter: none
    transform: none;

    //& ^[0]__inner

    & ^[0]__image
      transform: none;

    & ^[0]__items
      transform: none;

    & ^[0]__title-inner
      overflow: hidden;
      margin-right: -39px

  &__inner
    position: relative
    width: 100%
    min-height: 100%
    z-index: 1
    overflow: hidden;
    @media (max-width: $breakpoint-lg - 1)
      height: 100%
      //overflow-x: hidden;
      overflow-y: auto;

  &__image
    display: block
    position: absolute
    height: 795px - 70px
    left: 50%
    margin-left: 370px
    right: 0
    //bottom: -70px
    bottom: -46px
    transform: translateX(70px)
    pointer-events none
    anim(.2s)
    animation: 1.55s ease-in-out 0s reverse menu_toggle_image;
    z-index: 1

    @media (max-width: $breakpoint-lg - 1)
      display: none;
      //margin-left: 0
      //top: 100%
      //height: auto
      //bottom: 0
      //margin-top: -330px
      //right: 0px
      //left: auto
      //width: 620px

  &__title
    position: absolute;
    left: 50%;
    margin-left: -585px;
    overflow: hidden;
    top: 50%;
    width: 392px;
    transform: translateY(-50%);
    @media (max-width: $breakpoint-lg - 1)
      display: none

    &-inner
      //margin-right: -39px
      margin-right: 0
      font-size: 150px
      font-weight: bold
      animation: 1.34s ease-in-out 0s reverse menu_toggle_title;
      anim(.2s)

      span
        color: $blue

  &__items
    top: 0
    height: 100%
    position: absolute
    left: 50%
    width: 50%
    transform: translateX(-40px)
    margin-left: -2px
    z-index: 1
    anim(.2s)
    @media (max-width: $breakpoint-lg - 1)
      position: relative
      left: 0
      text-align: center
      width: 100%
      //top: 151px
      height: auto
      //padding-bottom: 330px
      padding-bottom: 50px

    & > ul
      //position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%
      display: flex;
      flex-direction column
      justify-content space-around

    & li
      padding-left: 0
      position: static;
      &:before
        display: none;
    & a
      color: $black
      border: 0

    //& > ul > li
    //  position: relative;

    & li.menu-item-has-children > a
      &:before
        content: ''
        background: url(../../images/sprite-chevron.png);
        position: absolute;
        left: 100%
        top: 50%
        margin-left: 38px
        transform translateY(-50%) scaleY(0)
        anim(.2s)

      &:hover
        &:before
          transform translateY(-50%) scaleY(1)

    & > ul > li > a
      //transition all .5s ease-in-out .9s
      transition opacity .5s ease-in-out .9s, transform .5s ease-in-out .9s

    & > ul > li > ul
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%

      display: flex;
      flex-direction column
      justify-content center
      transform translateX(100%)
      opacity: 0
      pointer-events none
      transition all .4s ease-in .05s
      z-index: 1

    & > ul > li > ul > li
      margin-bottom: 40px

    & li > a
      display: inline-block
      position: relative
      font-size: 36px
      font-weight: bold
      cursor: pointer
      anim(.2s)

      @media (max-width: $breakpoint-lg - 1)
        margin-top: 55px

      &:after
        content: ''
        display: block
        position: absolute
        top: 100%
        margin-top: 18px
        width: 0
        height: 7px
        left: 7px
        background: #006DFE
        anim(.2s)
        @media (max-width: $breakpoint-lg - 1)
          left: 50%
          transform translateX(-50%)

      &:hover
        color: $blue

        &:after
          left: 2px
          width: 191px
          @media (max-width: $breakpoint-lg - 1)
            left: 50%

  &--level2
    & ^[0]__title-inner
      animation: 1.34s ease-in-out 0s menu_toggle_title2;

    & ^[0]__image
      animation: 1.55s ease-in-out 0s menu_toggle_image2;

    & ^[0]__items
      & > ul > li > a
        transform translateX(-574px)
        opacity: 0
        pointer-events none
        transition transform .5s ease-in-out .05s, opacity .5s ease-in-out .05s

      & > ul > li > ul
        transform none
        transition all .4s ease-in-out .9s
        &.menu__submenu--active
          opacity: 1
          pointer-events all


    & ^[0]__back
      opacity: 1
      pointer-events all
      transform none
      transition: all .1s ease-out, opacity .2s ease-in-out .8s, transform .2s ease-in-out .8s

  &__close
    position: fixed
    font-weight: bold
    display: flex
    line-height: 1
    align-items center
    justify-content center
    color: #ffffff
    background: $blue
    cursor: pointer
    width: 220px
    height: 71px
    transform rotate(-90deg)
    transform-origin 0 0
    left: 0
    top: 50%
    margin-top: 110px
    letter-spacing 2px
    z-index: 3
    @media (max-width: $breakpoint-lg - 1)
      top: auto;
      bottom: 30px

    &-icon
      position: relative
      width: 36px
      height: 1px
      background: #ffffff
      margin-left: 15px
      margin-top: 2px
      margin-right: 27px

      &:before, &:after
        content ''
        display: block
        position: absolute
        width: 53px
        height: 1px
        background: #ffffff
        left: 10px

      &:before
        top: -10px

      &:after
        top: 10px

  &__head
    align-items center
    justify-content center
    height: 151px
    border-bottom: 1px solid #e5e5e5
    display: none
    @media (max-width: $breakpoint-lg - 1)
      display: flex
    @media (max-width: $breakpoint-md - 1)
      height: 160px
      align-items flex-start
      padding-top: 40px

  &__mail,
  &__address,
  &__phone
    display: flex
    align-items center
    margin: 0 15px

  &__address
    @media (max-width: $breakpoint-md - 1)
      position: absolute
      top: 95px
      left: 50%
      margin-left: -214px

  &__mail-icon,
  &__address-icon,
  &__phone-icon
    fill: $black
    display: block
    margin-right: 15px
    flex-shrink: 0

  &__mail-icon
    width: 18px
    height: 14px

  &__address-icon
    width: 17px
    height: 25px

  &__phone-icon
    width: 22px
    height: 22px

  &__phone
    font-size: 14px
    text-align: right

  &__phone-tel
    display: block
    font-size: 19px
    font-weight: bold
    margin-bottom: 2px

    span
      color: $blue

  &__back
    position: absolute;
    right: 100%
    margin-right: 30px
    border: 1px solid $blue;
    width: 50px
    height: 50px
    top: 50%;
    //margin-top: -220px;
    margin-top: -25px;
    background: $blue;
    display: flex;
    align-items center
    justify-content center
    z-index: 2
    opacity 0
    pointer-events none
    transform translateX(30px)
    transition all .1s ease-out, opacity .2s ease-in-out .2s, transform .2s ease-in-out .2s
    @media (max-width: $breakpoint-lg - 1)
      top: 20px
      margin-top: 0
      bottom: auto;
      right: 50%
      margin-right: -25px

    svg
      width: 19px
      height: 19px
      fill: #ffffff

    &:hover
      background: #ffffff

      svg
        fill: $blue

  @keyframes menu_toggle_title {
    0% {
      width: 100%
    }
    20% {
      width: 0
    }
    75% {
      width: 0
    }
    100% {
      width: 100%
    }
  }
  @keyframes menu_toggle_title2 {
    0% {
      width: 100%
    }
    20% {
      width: 0
    }
    75% {
      width: 0
    }
    100% {
      width: 100%
    }
  }

  @keyframes menu_toggle_image {
    0% {
      transform none
      opacity: 1
    }
    14.25% {
      transform translateX(100%)
      opacity: 0
    }
    73.15% {
      transform translateX(100%)
      opacity: 0
    }
    100% {
      transform none
      opacity: 1
    }
  }
  @keyframes menu_toggle_image2 {
    0% {
      transform none
      opacity: 1
    }
    14.25% {
      transform translateX(100%)
      opacity: 0
    }
    73.15% {
      transform translateX(100%)
      opacity: 0
    }
    100% {
      transform none
      opacity: 1
    }
  }
