.section-photos {
  padding: 7rem 0;
  background: url('../img/bg-circles.png') center no-repeat,
              url('../img/bg-general.jpg') center no-repeat;
  background-size: cover, cover;

  @media $display-breakpoints.lg-and-down {
    padding: vw(7*16) 0;
  }

  .layout--mobile & {
    padding: vw(100, 640) 0 vw(86, 640);
    background: url('../img/bg-mobile.jpg') center no-repeat;
    background-size: cover;
  }

  &__heading {
    text-align: center;
    color: $black;
    max-width: 700px;
    margin: 0 auto 4.75rem;

    @media $display-breakpoints.lg-and-down {
      max-width: vw(700);
    }

    .layout--mobile & {
      max-width: 100%;
      margin: 0 auto vw(100, 640);
    }

    .heading {
      font: bold 2.25rem/1.33 $font-accent;
      letter-spacing: 0.01em;
      padding-bottom: 1.5em;
      margin-bottom: 1.8em;

      @media $display-breakpoints.lg-and-down {
        font-size: vw(2.25 * 16);
      }

      .layout--mobile & {
        font-size: vw(36, 640);
        padding-bottom: vw(62, 640);
        margin-bottom: vw(70, 640);
      }

      &::after {
        content: '';
        size(130px, 5px);
        background #494347;
        absolute(0, 50%, 0px);
        transform: translateX(-50%);

        .layout--mobile & {
          size(vw(130, 640), vw(5, 640));
        }
      }
    }
    .text {
      font: 300 1.5rem/1.5 $font-base;
      letter-spacing: 0.01em;

      @media $display-breakpoints.lg-and-down {
        font-size: vw(24);
      }

      .layout--mobile & {
        font-size: vw(28, 640);
      }
    }
  }

  &__grid {
    z-index: 3;
  }

  // desktop texts
  &__texts {
    margin-top: -150px;

    @media $display-breakpoints.lg-and-down {
      margin-top: vw(-150);
    }

    .text {
      font: 1.25rem/1.5 $font-base;
      letter-spacing: 0.01em;

      @media $display-breakpoints.lg-and-down {
        font-size: vw(20);
      }
    }

    .text--1 {
      size(626px);
      absolute(-450px);
      right: -70px;
      z-index: 2;

      @media $display-breakpoints.lg-and-down {
        top: vw(-450);
        right: vw(-70);
        size(vw(626));
      }

      .text {
        circle(626px, 50%);
        background #d4e5ff;
        padding: 140px 100px;
        flexy(flex-end, flex-end);

        @media $display-breakpoints.lg-and-down {
          size(vw(626));
          padding: vw(140) vw(100);
        }
      }

      p {
        max-width: 390px;

        @media $display-breakpoints.lg-and-down {
          max-width: vw(390);
        }
      }
    }
    .text--2 {
      size(706px);
      margin-left: 230px;

      @media $display-breakpoints.lg-and-down {
        size(vw(706));
        margin-left: vw(230);
      }

      .text {
        circle(706px, 50%);
        background #c7b4c2;
        padding: 150px 90px;
        flexy(flex-end, flex-end);

        @media $display-breakpoints.lg-and-down {
          size(vw(706));
          padding: vw(150) vw(90);
        }
      }

      p {
        max-width: 480px;

        @media $display-breakpoints.lg-and-down {
          max-width: vw(480);
        }
      }

      &::before {
        content: '';
        circle(410px, 50%);
        background #a08499;
        absolute(130px);
        right: -280px;

        @media $display-breakpoints.lg-and-down {
          size(vw(410));
          top: vw(130);
          right: vw(-280);
        }
      }

      &::after {
        content: '';
        circle(220px, 50%);
        background #ac99a7;
        absolute();
        right: -120px;
        bottom: 40px;

        @media $display-breakpoints.lg-and-down {
          size(vw(220));
          right: vw(-120);
          bottom: vw(40);
        }
      }
    }

  }

  .highlight {
    margin: 10rem auto 0;
    max-width: 860px;
    padding: 100px 0;
    font: italic 1.5rem/1.5 $font-accent2;
    text-align: center;

    @media $display-breakpoints.lg-and-down {
      margin-top: vw(160);
      padding: vw(100) 0;
      font-size: vw(24);
      max-width: vw(860);
    }

    .layout--mobile & {
      margin: vw(64, 640) auto 0;
      max-width: vw(460, 640);
      font-size: vw(20, 640);
      padding: vw(60, 640) 0;
    }
    
    &::before
    &::after {
      content: '';
      size(130px, 5px);
      background #494347;
      absolute(0, 50%);
      transform: translateX(-50%);

      .layout--mobile & {
        size(vw(130, 640), vw(5, 640));
      }
    }

    &::before {
      top: 0;
    }
    &::after {
      bottom: 0;
    }
  }

  // mobile texts
  &__text {
    font: 300 vw(25, 640)/1.4 $font-base;

    .text--1 {
      circle(vw(626, 640), 50%);
      background: #d4e5ff;
      margin: vw(-195, 640) vw(-20, 640) vw(-140, 640);
      padding: vw(230, 640) vw(70, 640) vw(98, 640) vw(98, 640);

      &::before,
      &::after {
        content: '';
        display: block;
        circle(vw(304, 640), 50%);
        absolute();
        background #776472;
      }

      &::before {
        top: vw(-160, 640);
        left: vw(-10, 640);
      }

      &::after {
        bottom: vw(-100, 640);
        right: vw(-98, 640);
      }
    }

    .text--2 {
      circle(vw(740, 640), 50%);
      background #c7b4c2;
      margin: vw(-120, 640) vw(-50, 640) vw(-64, 640) vw(-112, 640);
      padding: vw(160, 640) vw(100, 640) vw(50, 640) vw(187, 640);
    }
  }
}

// desktop
.photo-grid {
  size(100%, 2840px);

  @media $display-breakpoints.lg-and-down {
    height: vw(2840);
  }

  &__item {
    transform: translateZ(0);
    &:hover {
      z-index: 3;
    }
    &--1 {
      absolute(278px, -40px);
      size(340px, 495px);

      @media $display-breakpoints.lg-and-down {
        absolute(vw(278), vw(-40));
        size(vw(340), vw(495));
      }

      .is-animating & .inner {
        transform: translate(-100%, -55%);
        transition: transform 1s;
      }
      .is-animating &.animate .inner {
        transform: translate(0, 0);
      }
    }
    &--2 {
      absolute(0px, 300px);
      size(516px, 774px);

      .is-animating & .inner {
        transform: translate(0, 0);
        transition: transform 1s;
      }
      .is-animating &.animate .inner {
        transform: translate(0, 0);
      }

      @media $display-breakpoints.lg-and-down {
        absolute(0px, vw(300));
        size(vw(516), vw(774));
      }
    }
    &--3 {
      absolute(184px, 774px);
      size(480px, 720px);

      .is-animating & .inner {
        transform: translate(100%, -25%);
        transition: transform 1s;
      }
      .is-animating &.animate .inner {
        transform: translate(0, 0);
      }

      @media $display-breakpoints.lg-and-down {
        absolute(vw(184), vw(774));
        size(vw(480), vw(720));
      }
    }
    &--4 {
      absolute(773px, -230px);
      size(1003px, 669px);

      .is-animating & .inner {
        transform: translate(-100%, 0);
        transition: transform 1s;
      }
      .is-animating &.animate .inner {
        transform: translate(0, 0);
      }

      @media $display-breakpoints.lg-and-down {
        absolute(vw(773), vw(-230));
        size(vw(1003), vw(669));
      }
    }
    &--5 {
      absolute(903px, 773px);
      size(515px, 772px);

      .is-animating & .inner {
        transform: translate(100%, 0);
        transition: transform 1s;
      }
      .is-animating &.animate .inner {
        transform: translate(0, 0);
      }

      @media $display-breakpoints.lg-and-down {
        absolute(vw(903), vw(773));
        size(vw(515), vw(772));
      }
    }
    &--6 {
      absolute(1442px, -101px);
      size(874px, 582px);

      .is-animating & .inner {
        transform: translate(-100%, 0);
        transition: transform 1s;
      }
      .is-animating &.animate .inner {
        transform: translate(0, 0);
      }

      @media $display-breakpoints.lg-and-down {
        absolute(vw(1442), vw(-101));
        size(vw(874), vw(582));
      }
    }
    &--7 {
      absolute(1674px, 643px);
      size(580px, 870px);

      .is-animating & .inner {
        transform: translate(100%, 0);
        transition: transform 1s;
      }
      .is-animating &.animate .inner {
        transform: translate(0, 0);
      }

      @media $display-breakpoints.lg-and-down {
        absolute(vw(1674), vw(643));
        size(vw(580), vw(870));
      }
    }
    &--8 {
      absolute(2024px, 101px);
      size(542px, 815px);

      .is-animating & .inner {
        transform: translate(-100%, 50%);
        transition: transform 1s;
      }
      .is-animating &.animate .inner {
        transform: translate(0, 0);
      }

      @media $display-breakpoints.lg-and-down {
        absolute(vw(2024), vw(101));
        size(vw(542), vw(815));
      }
    }
  }

  &__img {
    display: block;
    size(100%, auto);
    transform: translateZ(0);

    &.hover {
      absolute(0px, 0px);
      transition: opacity 0.5s;

      ^[0]__item:hover & {
        opacity: 0;
      }
    }
  }
}

// mobile
.photo {
  &__item {
    width: vw(430, 640);
    margin: 0 auto vw(10, 640);
    z-index: 2;
  }

  &__img {
    display: block;
    size(100%, auto);
  }
}