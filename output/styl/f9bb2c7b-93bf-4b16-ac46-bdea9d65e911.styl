@import 'common.styl'

.wrapper
    height 0px
    box-shadow 0 0.2em 0 0.1em rgba(0, 0, 0, 0.6)
    border-radius 5px
    overflow hidden
    transition height 0.5s ease-out
    margin 0 auto
    width 100%

.button
    margin-top 0.5em
    width 1.2em
    margin 0 auto 1em
    border-radius 0 0 1em 1em
    box-shadow 0 0 0 2px rgba(0, 0, 0, 0.6)
    text-align center
    background-color #fff
    cursor pointer

.wrapper.open
    height 3em
    box-shadow 0 0 0 0 rgba(0, 0, 0, 0.6)
    transition height 0.5s ease-out

.menu
    height 100%
    box-shadow inset 0 0 0 2px rgba(30,0,0,0.6)
    border-radius 5px
    vertical-align bottom    
    margin 0

.menu__item
    display inline-block
    vertical-align middle
    padding 1em

.menu__item_hidden
    height 100%
    width 0px
    padding 0

.menu-item-text
    display inline-block
    height 100%
    vertical-align middle        

