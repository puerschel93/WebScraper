.members-card-container {
	perspective: 600px;
	display: inline-block;
}
.members-card-container__card {
	height: 100%;
	transform-style: preserve-3d;
	transition: all 1s ease-in-out;
	width: 100%;
	cursor:pointer;
}
.members-card-container__card:hover {
	transform: rotateY(180deg);
}
.members-card-container__side {
	backface-visibility: hidden;
	border-radius: 6px;
	overflow:hidden;
}
.members-card-container__side.back {
	background: #eaeaed;
	color: #0087cc;
	text-align: center;
	transform: rotateY(180deg);
	position relative
	bottom: 30px;
	font-size 12px
	text-transform: capitalize;
	word-wrap:break-word;
}

