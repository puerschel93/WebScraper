/*------------- checked*/
.checkbox {
    vertical-align: top;
    width: 17px;
    height: 17px;
    margin: 0 3px 0 0;
}
.checkbox + label {
    cursor: pointer;
}
.checkbox:not(checked) {
    position: absolute;
    opacity: 0;
}
.checkbox:not(checked) + label {
    position: relative;
    padding: 0 0 0 35px;
}
.checkbox:not(checked):disabled + label {
    opacity .4
}
.checkbox:not(checked) + label:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 14px;
    height: 14px;
    border: 1px solid rgb(179, 186, 208);
    background: #FFF;
    border-radius 2px
}
.checkbox:not(checked) + label:after {
    content: '';
    position: absolute;
    top: 3px;
    left: 3px;
    width: 10px;
    height: 10px;
    background: rgb(125, 182, 33);
    opacity: 0;
    transition: all .2s;
}
.checkbox:checked + label:after {
    opacity: 1;
}

