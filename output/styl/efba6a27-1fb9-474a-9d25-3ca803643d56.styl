.show_more_btn
    position relative
    padding-left 30px
    transition .3s ease
    &:before
        content ''
        position absolute
        width 22px
        height 22px
        display block
        background url("../img/02_all/show_more_btn.png") no-repeat
        top -4px
        left 0
        transition .4s ease
    &:after
        content ''
        position absolute
        width 22px
        height 22px
        display block
        background url("../img/02_all/show_more_btn_hover.png") no-repeat
        top -4px
        left 0
        opacity 0
        visibility hidden
        transition .4s ease
    &:hover
        color #2a8bf2
        &:before
            opacity 0
            visibility hidden
        &:after
            opacity 1
            visibility visible

