.product {

    &-thumb {
        padding: 0 0 2rem 0;

        .name, .price {
            font-size: 0.875rem
        }

    }

    &.single {

        .layout {

            display: grid;
            grid-template-columns: 1fr 1fr;

            @media $small {
                display: block
            }

        }

        .gallery {

            height: "calc(100vh - %s)" % $top-nav-height;
            max-height: 800px;
            position: relative;

            @media $small {
                height: auto;
                width: 100vw;
                margin-left: -2rem;
            }

            img.main-image {

                height: 100%;
                width: 100%;
                object-fit: cover;

                @media $small {
                    height: 100vw;
                    width: 100vw;
                    object-fit: cover;
                }
            }

            .thumbs {
                position: absolute;
                top: 6rem;
                left: 0;
                width: 5rem;
                height: auto;
                background-color: #f6f6f6;

                @media $small {
                    background-color: white;
                    position: relative;
                    height: 5rem;
                    top:0;
                    margin: 0 0 2rem 0;
                    width: 100%;
                    overflow-x: auto;
                    overflow-y: hidden;
                }

                img {
                    display: block;
                    height: 5rem;
                    width: 100%;
                    object-fit: cover;

                    @media $small {
                        display: inline-block;
                        width: 5rem;
                        height: 100%;
                    }
                }
            }

        }

        .details {

            padding: 3rem 0 3rem 3rem;
            display: flex;
            flex-direction: column;

            @media $medium {
                padding: 2rem;
            }

            @media $small {

                padding: 2rem 0;
            }

            .breadcrumbs {

                flex: 0 0 auto;
                width: 100%;
                font-size: 0.8rem;
                border-bottom: 1px solid #ccc;
                padding-bottom: 1rem;
                margin-bottom: 2rem;

                a {
                    text-transform: uppercase;
                    display: inline-block;
                    margin: 0 1rem;

                    font-weight: 600;

                    &:first-child {
                        margin-left: 0;
                    }
                }

            }

            .info {

                flex: 1;

                .title {
                    font-size: 1.875rem;
                    margin-bottom: 1.25rem;
                }

                .price, .previous-price, .discount-price {
                    font-size: 1.125rem;
                }

                .previous-price, .discount-price {
                    color: rgba(42, 42, 41, 0.5);
                }

                p {
                    margin: 1.875rem 0;
                }

                .previous-price {
                    text-decoration: line-through;
                }

                .actions {

                    margin-top: 2rem;
                    display: flex;
                    width: 50%;
                    height 50px;

                    @media $small {
                        width: 100%;
                    }

                    .quantity {
                        flex: 0 0 3rem;
                        height 100%;
                        display: flex;

                        & > * {
                            flex: 1;
                            height 100%;
                        }

                        .remove, .add {
                            display: none;
                        }

                        .number {
                            font-size: 1.1rem;
                            padding: 0;
                            text-align: center;
                        }
                    }

                    .buy, .out-of-stock {
                        flex: 1;
                        height 100%;
                        margin-left: 1rem;
                        font-size: 14px;
                        font-weight: 600;
                        border: 2px solid $color-primary;
                        text-transform: uppercase;
                        background: none;
                        color: $color-primary;
                    }

                    .out-of-stock {
                        opacity: 0.7;
                    }

                }

            }

            .variants {
                width: 100%;
                overflow-x: auto;
                overflow-y: hidden;
                white-space: nowrap;
                text-align: left;
                display: flex;
                margin: 1rem 0;

                & > a {
                    flex: 0 0 5rem;
                }

                a {
                    display: inline-block;
                    width: 10rem;
                    margin-right: 1rem;
                    height: auto;
                    vertical-align: top;

                    h3, h2 {
                        display: none;
                    }

                }
            }


            .sharing {
                flex: 0 0 auto;
                display: flex;
                align-items: center;
                justify-content: flex-end;
                border-top: 1px solid #ccc;
                padding-top: 1em;
                margin-top: 2rem;
                font-size: 14px;
                font-weight: 300;
            }

        }

        .content {
            background-color: white;
            padding: 6rem;
            text-align: center;

            @media $small {
                padding: 2rem 0;
            }

            .tabs {
                display: block;
                width: 100%;
                text-align: center;
            }

            .content-text {
                padding-top: 2rem;
                max-width: 900px;
                margin: auto;
                text-align: left;
            }
        }


        .related {
            background-color: $color-secondary;
            padding: 6rem;
            text-align: center;
            color: white;
            font-size: 14px;

            @media $small {
                padding: 2rem 0 4rem 0;

                .contain {
                    padding: 0;
                }
            }

            h4 {
                font-size: 14px;
                margin-bottom: 2rem;
            }

            a {
                color: white;
            }

            .products {
                width: 100%;
                overflow-x: auto;
                overflow-y: hidden;
                white-space: nowrap;
                text-align: left;
                display: flex;

                & > div {
                    flex: 0 0 5rem;
                }

                .product-thumb {
                    display: inline-block;
                    width: 18rem;
                    margin-right: 2.3rem;
                    height: auto;
                    vertical-align: top;
                }
            }

        }

    }

}
