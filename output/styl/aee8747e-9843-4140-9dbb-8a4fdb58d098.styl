/**
 * The transform property applies a 2D or 3D transformation to an element.
 * This property allows you to rotate, scale, move, skew, etc., elements.
 *
 * Chrome 4.0+, Edge 9.0+, Firefox 3.5+, Safari 3.2+, Opera 10.5+
 */

transform(value)
  -webkit-transform: value // Chrome, Safari, Opera
  -moz-transform: value // Firefox
  -ms-transform: value // Edge
  -o-transform: value // Opera
  transform: value

/**
 * The transform-origin property allows you to change the position of transformed elements.
 *
 * Chrome 4.0+, Edge 9.0+, Firefox 3.5+, Safari 3.2+, Opera 10.5+
 */

transform-origin(value = 50% 50% 0)
  -webkit-transform-origin: value // Chrome, Safari, Opera
  -moz-transform-origin: value // Firefox
  -ms-transform-origin: value // Edge
  -o-transform-origin: value // Opera
  transform-origin: value

/**
 * The transform-style property specifies how nested elements are rendered in 3D space.
 *
 * Chrome 12.0+, Edge 11.0+, Firefox 10.0+, Safari 4.0+, Opera 15.0+
 */

transform-style(value = flat)
  -webkit-transform-style: value // Chrome, Safari, Opera
  -moz-transform-style: value // Firefox
  -ms-transform-style: value // Edge
  -o-transform-style: value // Opera
  transform-style: value
