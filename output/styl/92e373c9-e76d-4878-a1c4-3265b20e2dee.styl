/*!-----------------------------------------------------------------
  .callout - модуль выноска
 -----------------------------------------------------------------*/
.callout
	padding: 20px
	margin: 20px 0
	border: 1px solid #eee
	border-left-width: 5px
	border-radius: $theme.default.border.radius

	h4
		margin-top: 0
		margin-bottom: .25rem
	p:last-child
		margin-bottom: 0

	& + &
		margin-top: -5px

	&.is-warning
		border-color: $theme.default.isWarning.borderColor
		h4
			color: $theme.default.isWarning.borderColor
	&.is-danger
		border-color: $theme.default.isDanger.borderColor
		h4
			color $theme.default.isDanger.borderColor
	&.is-info
		border-color: $theme.default.isInfo.borderColor
		h4
			color $theme.default.isInfo.borderColor
	&.is-success
		border-color: $theme.default.isSuccess.borderColor
		h4
			color $theme.default.isSuccess.borderColor