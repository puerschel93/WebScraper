#site-container > header
    height: 50px;
    overflow hidden
    font-family: $font-fancy

    @media screen and (min-width: 576px)
        height: 68px;

    @media screen and (min-width: 768px)
        height: 80px;
  
    .logo
        width: 100%
        height 50px
        text-align: center 
        z-index 40

        @media screen and (min-width: 576px)
            height: 68px;

        img 
            height 30px
            margin-top 13px
            width: auto

            @media screen and (min-width: 576px)
                height 40px
                margin-top 18px

    nav.navbar
        background-color $color-gold !important
        margin 0
        padding 0
        height: 50px;

        @media screen and (min-width: 576px)
            height: 68px;

        @media screen and (min-width: 768px)
            font-size 1.6rem
            height: 80px;
        
        @media screen and (min-width: 992px)
            font-size 1.8rem

            ul
                li
                    margin 0 10px

                    a
                        color $color-black
                        opacity 0.6
                        transition: opacity 0.3s ease-in-out

                        &:hover 
                            $color-black
                            opacity 1

    #menu-icon
        width 28px
        height 45px
        position absolute
        margin 10px 0 0 15px
        transform rotate(0deg)
        transition .5s ease-in-out
        cursor pointer
        z-index 50

        @media screen and (min-width: 576px)
            margin 10px 0 0 20px
            width 32px
            height 45px

        @media screen and (min-width: 768px)
            margin 10px 0 0 26px
            display: none

        span
            display block
            position absolute
            height 3px
            width 100%
            background $color-black
            border-radius 9px
            opacity 1
            left 0
            transform rotate(0deg)
            transition .25s ease-in-out

            &:nth-child(1)
                top 0px
            
            &:nth-child(2), &:nth-child(3)
                top 10px

            &:nth-child(4)
                top 20px

        &.open
            span

                &:nth-child(1)
                    top 10px
                    width 0%
                    left 50%

                &:nth-child(2)
                    transform rotate(45deg)

                &:nth-child(3)
                    transform rotate(-45deg)

                &:nth-child(4)
                    top 10px
                    width 0%
                    left 50%

    #navbar-mobile
        top 0
        position absolute
        z-index 30
        width 100%
        height: 100%
        background-color: $color-black
        opacity 1
        display none

        &.show
            display block

        ul
            height 100%
            width 80%
            display flex
            justify-content center
            align-items center
            font-size 1.4rem

            li 
                width 100%
                padding 10px 0
                text-align center
                border-bottom 1px solid darken($color-gold, 60%)

                &:last-child
                    border-bottom none

                a
                    color darken($color-white, 40%)
                
#site-container.menu-opened
    nav.navbar
        background-color: transparent !important

    #menu-icon
        span
            background-color: darken($color-gold, 10%)
            opacity 0.8

    #navbar-mobile
        display block

    .logo
        opacity 0.7

 body.menu-opened
    overflow hidden !important