.firstscreen
    height 100vh
    @media ( max-width size-tablet ) 
        height auto
        margin-bottom 120px
    header
        .content
            padding-top em(46)
            display grid
            grid-template-columns 1fr auto 1fr
            align-items center
            grid-gap em(196)
            @media (max-width size-notebook)
                grid-gap em(90)
                padding-top em(26)
            @media (max-width size-tablet)
                grid-gap em(54)
                padding-top em(26)
            @media ( max-width size-mobile )
                grid-template-columns 1fr 
                grid-gap em(0)
            .logo
                transition transform 300ms ease-in-out
                //margin-right em(-24)
                @media ( max-width size-notebook )
                    margin-top em(0)
                    height em(45px)
                @media ( max-width size-tablet )
                    height 30px
                &:hover
                    transform scale(1.1)
            .nav
                @media ( max-width size-mobile )
                    display none
                ul
                    margin 0
                    padding 0
                    list-style none
                    display grid
                    grid-template-columns auto auto auto
                    grid-gap em(115)
                    @media ( max-width size-notebook )
                        grid-gap em(75)
                    @media (max-width size-tablet)
                        grid-gap em(55)
                    li
                        margin 0
                        padding 0
                        display inline-block
                        letter-spacing em(1)
                        &.icons
                            &:hover
                                a
                                    color $color.accent1
                            .social-icons
                                display grid
                                grid-template-columns auto auto
                                justify-content end
                                grid-gap em(40)
                                @media (max-width size-tablet)
                                    grid-gap em(20)
                                .icon
                                    color $color.accent1
                                    svg
                                        height em(20px)
                                        width em(20px)
                                        @media ( max-width size-notebook )
                                            height em(18px)
                                            width em(18px)
                                    &:hover
                                        color $color.white !important
                        &:hover
                            a
                                color $color.white
                        a
                            font-size em(19px)
                            font-family Din-Pro2, sans-serif
                            font-weight 500
                            letter-spacing em(0.1)
                            text-transform uppercase
                            color $color.accent1
                            text-decoration none
                            transition color 300ms ease-in-out
                            @media (max-width $size-tablet)
                                font-size em(14px)
    .content-info
        margin-top em(138px)
        z-index 2
        display grid
        grid-template-columns repeat(12, 1fr)
        grid-template-areas "left left left left center center center center right right right right"
        grid-gap em(24px)
        @media ( max-width size-notebook)
            margin-top em(130px)
        @media ( max-width size-tablet)
            margin-top em(50px)
        @media ( max-width size-mobile)
            margin-top em(10)
            grid-template-columns repeat(4, 1fr)
            grid-template-areas "left left left 0" "right right right 0"
        .left
            z-index 2
            display grid
            grid-area left
            grid-template-rows auto auto 1fr
            grid-gap 30px
            @media (max-width size-mobile)
                margin-top em(20)
            h1
                margin 0
                padding 0
                font-weight 700
                line-height .95em
                text-transform uppercase
                font-family titlefont
                font-size em(110px)
                width 100%
                @media ( max-width size-tablet)
                    font-size em(60px)
            h2
                margin 0
                padding 0
                text-transform uppercase
                font-weight 500
                width 100%
                font-size em(29px)
                line-height em(16px)
                letter-spacing em(0.8)
                font-family Din-Pro
                color $color.accent1
                @media ( max-width size-tablet)
                    font-size em(18px)
                    line-height em(22px)
                @media (max-width size-mobile)
                    width 80%
                @media (max-width size-mobile)
                    margin-top em(10)
            p
                margin 0
                padding 0
                color $color.white
                letter-spacing em(0.85)
                font-size em(20px)
                opacity 0.6
                font-weight 400
                @media ( max-width size-tablet)
                    font-size em(15px)
                @media (max-width size-mobile)
                    position absolute
                    top 0
                    left 0
                    width 100%
                    padding em(24)
                    margin-top 100vh
                    color $color.white
                    opacity 0.6
        .center
            z-index -2
            grid-area center
            position absolute
            top 0
            left 0
            width 100vw
            height 100vh
            overflow hidden
            @media ( max-width size-notebook )
                height 100vh
            @media (max-width size-tablet)
                width 100%
                height 100%
                max-height 604px
            @media (max-width size-mobile)
                max-height none
                height 125vh
            .first-bg
                width 100%
                height 100%
                background-size cover
                background-position bottom center
                @media (max-width size-notebook)
                    background-position top center
                @media (max-width size-tablet)
                    height 100%
                    width 100vw
                @media (max-width size-mobile)
                    height 100%
        .right
            z-index 2
            grid-area right
            display grid
            grid-gap em(40px)
            @media (max-width size-mobile)
                width 76%
            .tasting
                h3
                    margin 0
                    padding 0
                    opacity .72
                    font-size em(38px)
                    margin-bottom em(6)
                    font-family titlefont
                    font-weight 400
                    letter-spacing em(0.4)
                    @media ( max-width size-tablet)
                        font-size em(25px)
                    @media ( max-width size-mobile)
                        color $color.white
                        font-size em(23px)
                        opacity .85
                ul
                    margin 0
                    padding 0 0 0 em(30px)
                    li
                        margin 0
                        padding 0
                        color #D1D1D1
                        opacity .75
                        font-size em(22px)
                        letter-spacing em(0.6)
                        line-height em(22px)
                        margin-bottom em(13px)
                        @media ( max-width size-tablet)
                            font-size em(15px)
                        @media ( max-width size-mobile)
                            color $color.white
                            opacity .7
            .price-info
                margin-top em(-20px)
                display grid
                align-content center
                grid-template-columns 1fr 1fr
                .price
                    font-weight bold
                    font-size em(110)
                    line-height em(14)
                    padding 0
                    margin 0
                    @media ( max-width size-notebook ) {
                        font-size em(100)
                    }
                    @media ( max-width size-tablet ) {
                        font-size em(70)
                    }
                .info
                    display grid
                    justify-self end
                    align-content center
                    grid-template-columns 1fr
                    font-size em(24)
                    grid-gap em(3px)
                    opacity .65
                    @media ( max-width size-notebook ) {
                        font-size em(23)
                    }
                    @media ( max-width size-tablet ) {
                        font-size em(18)
                    }
                    @media ( max-width size-mobile ) {
                        margin-right 14px
                    }
                    .size
                        justify-self end
            .btns
                display grid
                grid-gap em(20)
                