@import 'style/*'
.mertaz-head
    background-image url('../images/slider.png')
    height 900px
    background-position center
    @media screen and (max-width: 767px)
        margin-top -50px
    .main-haeder
        @media screen and (max-width: 767px)
            display none
        .logo-img
            img 
                width 204px
                height 110px
        .nav
            padding-right 40px
            a 
                color #fff
                transition .3s 
                font-family 'Cairorg'
                &:hover
                    color maincolor
    .to-down
        color #ffffff
        margin-right 100px
        @media screen and (max-width: 767px)
            margin-right 0
            margin-top 260px
            padding 0!important
        h1 
            font-family 'Cairoblack'
            margin-bottom 30px
            @media screen and (max-width: 1199px)
                font-size 35px
            @media screen and (max-width: 390px)
                font-size 20px
        p 
            font-size 18px
            font-weight 100
            font-family 'Cairorg'
            @media screen and (max-width: 1199px)
                font-size 15px
            @media screen and (max-width: 390px)
                font-size 12px
        .links
            a 
                width 45%
                display inline-block
                text-align center
                border-radius 50px
                font-size 11px
                font-family 'Cairorg'
                margin 20px 0
                @media screen and (max-width: 1199px)
                    width 75%
                    margin-bottom 10px
                @media screen and (max-width: 390px)
                    width 100%
                img 
                    width 21px
                span 
                    font-size 18px
                    line-height 0
.options
    .option
        transition .3s
        font-family 'cairorg'
        img 
            width 255px
            height 255px
            border-radius 50%
            @media screen and (max-width: 330px)
                width 190px
                height 190px
        h4 
            color maincolor
            font-size 20px
        p 
            color graycolor 
            opacity .3
            font-size 15px
        &:hover
            box-shadow 0px 3px 10px 0px #000
            p 
                opacity 1
.features
    background-color #f7f7f7
    font-family 'cairorg'
    img 
        width 100%
    p 
        color graycolor
        opacity .3
    .one-feature
        transition .3s 
        -webkit-transition .3s 
        -moz-transition .3s 
        -o-transition .3s 
        img 
            width 96px
            height 96px
            @media screen and (max-width: 1199px) and (min-width: 820px)
                width 100%
                height auto
        p 
            font-size 14px
            transition .3s 
        &:hover
            box-shadow 0px 1px 3px 0px gray
            p 
                opacity 1
.opinions
    background-image url(../images/reviews.png)
    background-repeat no-repeat
    background-position center
    background-size cover
    padding-top 15rem
    height 995px
    color #fff
    font-family 'cairorg'
    position relative
    background-color #f7f7f7
    p 
        opacity .7
        font-size 20px
    .head-main
        color #ffffff
        p 
            opacity .7
            font-size 15px
            margin-top 15px
    .item
        img 
            width 220px
            height 220px
            border-radius 50%
            margin auto
        p 
            -webkit-line-clamp 6
            -webkit-box-orient vertical
            overflow hidden
            text-overflow ellipsis
            display -webkit-box
            font-size 15px
            line-height 2
    .owl-dots
        .owl-dot
            span 
                background-color transparent !important 
                border 1px solid #fff 
                &:hover
                    background-color #fff !important 
                    border 1px solid #fff 

        .owl-dot.active 
            span 
                background-color #fff !important 
                border 1px solid #fff 
    &:hover
        .item
            box-shadow 0px 0px 25px 0px #3c3c3c     
.app-screens
    font-family 'cairorg'
    p 
        color graycolor 
        opacity .3
        margin-top 15px
        line-height 1.75
        font-size 19px
        -webkit-line-clamp 6
        -webkit-box-orient vertical
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        @media screen and (max-width: 767px)
            font-size 12px
    img 
        width 100%
        height 100%
        @media screen and (max-width: 767px)
            height auto
        @media screen and (max-width: 575px)
            width 200px !important
            height 400px

    .item
        position relative
        .carousle-details
            padding-left 7rem
            h1 
                color #466c91
                @media screen and (max-width: 767px)
                    font-size 15px
    .owl-dots
        .owl-dot
            span 
                background-color transperent !important
                border 1px solid #466c91
        .owl-dot.active
            span 
                background-color #466c91
                border 1px solid #466c91
        .owl-dot:hover
            span 
                background-color #466c91
                border 1px solid #466c91
    .owl-nav
        position absolute
        left 0
        right 0
        top 50%
        @media screen and (max-width: 404px)
            display none
        .owl-prev
            position relative
            float right 
            background transparent
            transition .3s 
            -webkit-transition .3s 
            -moz-transition .3s 
            &:hover
                background transparent
                &:before
                    background-color #d2d2d2
                    color #fff
            &:before
                content '\f108'
                position absolute
                font-family 'Flaticon'
                right  0
                top 0
                width 50px
                height 50px
                color #d2d2d2
                background-color #fff
                border 2px solid #d2d2d2 
                border-radius 50%
                padding-top 5px
                font-size 25px
        .owl-next
            position relative
            float left  
            background transparent
            transition .3s 
            -webkit-transition .3s 
            -moz-transition .3s 
            &:hover
                background transparent
                &:before
                    background-color #d2d2d2
                    color #fff
            &:before
                content '\f107'
                position absolute
                font-family 'Flaticon'
                left 0
                top 0
                width 50px
                height 50px
                color #d2d2d2
                background-color #fff
                border 2px solid #d2d2d2 
                border-radius 50%
                padding-top 5px
                font-size 25px
.support
    // background-image url('../images/support.png')
    // background-repeat no-repeat
    background-color #f7f7f7
    // background-position left
    font-family 'cairorg'
    form
        .form-controlle
            input , textarea
                width 100%
                border-radius 20px
                padding 5px
                border 1px solid #afadad
                &:focus
                    outline none
            input[type=submit]
                width 25%
                @media screen and (max-width: 340px)
                    width 30%
                background linear-gradient(to left, #466c91 , #58acae)
                color #fff
                transition .3s
                -webkit-transition .3s
                -moz-transition .3s
                -o-transition .3s
                &:hover
                    transform translateY(-10px)
                    -webkit-transform translateY(-10px)
                    -moz-transform translateY(-10px)
                    -o-transform translateY(-10px)
    ul 
        padding 0
        list-style-type none
        li 
            img 
                width 40px
                height 40px
                margin-left 20px
            a 
                color #b1c0cf
    img 
        width 1030px

.footer
    background-image url('../images/footer_bg.png')
    img 
        padding 20px
        width 185px
        height 250px
    a 
        color #ffffff
        margin-left 5px
        i 
            width 35px
            height 35px
            border-radius 50px
            border 1px solid #fff
            padding-top 9px
            transition .3s 
            -webkit-transition .3s 
            -moz-transition .3s 
            -o-transition .3s 
            &:hover
                transform translateY(-10px)
                -webkit-transform translateY(-10px)
                -moz-transform translateY(-10px)
                -o-transform translateY(-10px)
    p 
        color #fff
        










            