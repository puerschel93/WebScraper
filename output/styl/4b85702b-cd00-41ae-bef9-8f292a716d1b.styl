@import 'variables'

* 
	padding: 0
	margin: 0
	-webkit-box-sizing: border-box 
	-moz-box-sizing: border-box
	box-sizing: border-box
	&:before
		box-sizing: border-box
	&:after
		box-sizing: border-box

html, body
	font: font-size/line-height font-main
	color: #999
	background: #F5F5F5
	height: 100vh

a 
	text-decoration: none
	color: #666
	&:hover
		color:#333
ul 
	list-style: none
	
.content
	width: 95%
	max-width: 550px
	//padding: 5px 5px
	margin: 0 auto 	
	//text-align: center

.content:before, .content:after, .row:after, .row:before, .clear:before, .clear:after, header:before, header:after	
		content: " "
		display: table

.content:after, .row:after, .clear:after,  header:after		
		clear:both

.content .cols.col-1, .content .cols.col-2,	.content .cols.col-3, .content .cols.col-4,	.content .cols.col-6, .content .cols.col-7, .content .cols.col-8, .content .cols.col-9, .content .cols.col-10, .content .cols.col-11, .content .cols.col-12
	width: 100%

.content .cols	
		float: none
.logo
	display: inline-block
	cursor: pointer
	width: 105px;
	height: 45px;
	background: url('SVG/logo.svg');
	background-size: 105px 45px;
	
.mobile-nav
	float: right
	color: #666
	font-weight: 700
	padding: 5px
	button
		margin-left: 45px
.nav 
	display: none
.striked
	text-decoration: line-through
		
/*==============================HEADER=========================*/
header
	position: fixed
	width: 100%
	z-index: 20
	padding: 5px 5px 0 5px
	top: 0
	background: #fff
	box-shadow: 0px 1px 5px 0px rgba(0,0,0,0.2)

.total
	display: none

/*=====================ИКОНКИ===================*/
.down-logo,	.check, .close-logo, .phone-logo
	float: right

.add-logo, .filter-logo, .down-logo, .check, .close-logo, .phone-logo
	display: inline-block
	border: none
	cursor: pointer

.phone-logo
	width: 20px;
	height: 20px;
	background: url('SVG/phone.svg');
	background-size: 20px 20px;	
	
.add-logo
	width: 25px;
	height: 25px;
	background: url('SVG/add.svg');
	background-size: 25px 25px;	

.filter-logo
	width: 25px;
	height: 25px;
	background: url('SVG/filter.svg');
	background-size: 25px 25px;
	

.down-logo
	margin-bottom: -3px
	margin-right: 7px
	width: 20px
	height: 20px
	background: url('SVG/down.svg')
	background-size: 20px 20px
	
.checked
	color: #666
	font-weight: 700
	
.check
	margin-bottom: -3px
	margin-right: 7px
	width: 20px
	height: 20px
	background: url('SVG/check.svg')
	background-size: 20px 20px

.close-logo
	display: none
	margin-bottom: -3px
	margin-right: 7px
	width: 20px
	height: 20px
	background: url('SVG/close.svg')
	background-size: 20px 20px
	
	
/*======================FILTER==========================*/	
	
.check-desk
	display: none

.filter-menu
	display: none
	background: rgba(255, 255, 255, 0.8)
	z-index: 15
	width: 100%
	position: absolute
	right: 0px
	top: 49px
.filter
	margin-left: 25%
	width: 75%
	background: #fff
	opacity: 1
.filter
	.list-header
		padding: 15px 0 15px 15px
		margin-left: 0
		color: #999
	li 
		color: #333
		padding: 10px 0
		margin-left: 15px
		border-bottom: 1px solid #F1EDED

.price-list-filter
	margin-bottom: 30px	

.mark-list-filter li
	cursor: pointer
	
/*====================================MAIN==============================*/
main
	margin: 50px 5px 10px 5px
	position: relative
	//width: 100%

figure
	position: relative
	background: #fff
	box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.1)
	border-radius: 3px
	margin-bottom: 10px
	width: 100%
	img
		width: 100%
	.car
		position: relative
		.car-price
			position: absolute
			bottom: 10px
			left: 10px
			font-family: Roboto-Bold
			font-size: 20px
			color: #FFF
			text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.5)
figcaption
	position: relative
	padding: 5px 10px 10px 10px
	.car-name
		color: #666
	.car-info
		span 
			margin-right: 7px
.pager
	display: none

/**===================================PREVIEW========================*/
hr 
	margin-bottom: 10px
	margin-top: 10px
			

.preview 
	p 
		margin-bottom: 9px
	.price 
		font-size: 18px
		color: #666
		font-family: Roboto-Bold	
	h3
		font-family: Roboto-Bold
		color: #666
		margin-bottom: 10px

.contact .phone-number
	font-size: 18px
	color: #666
	font-family: Roboto-Bold	

/*================================FOOTER==================*/
footer 
	text-align: center
	padding: 0 0 20px 0
footer a, footer p 
	display: none


@media screen and (min-width: 768px)
	header
		padding-left: 1.5%
		padding-right: 2%
		
	main
		margin: 0
		margin-top: 55px
		margin-left: 20%
		margin-bottom: 40px
	
	.total
		display: inline-block
		position: relative
		left: 11%
		bottom: 15px
	.content
		max-width: 1200px
		width: 100%	
		
	.mobile-nav
		display: none
		
	.nav
		display: block
		float: right
		margin-top: 9px
		a
			color: #666
			
	.filter-menu
		display: block 
		float: left
		width: 20%
		position: static
	
	.mark-list-filter li
		&:not(:first-child)
			cursor: pointer
		
	.filter
		margin-left: 0
		width: 100%
		
	figure
		float: left
		width: 31.7%
		margin: 0.5%
		&:hover
			box-shadow: 0px 3px 8px 0px rgba(0, 0, 0, 0.5)
			
		
	.preview 
		width: 50%
		margin: 0 auto
		margin-left: 15%
		&:hover
			box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.1)
			
		
	.price-list-filter li
		&:not(:first-child)
			padding: 7px 10px
			border: 1px solid #999
			border-radius: 3px
			&:hover
				cursor: pointer
				border: 1px solid #666
	
	.pager
		display: block
		margin-top: 20px
		
	.pager
		ul li
			display: inline-block
			margin: 5px
			padding: 5px 12px
			cursor: pointer
			color: #666
			font-weight: 700
			border: 1px solid #f5f5f5
			&:hover
				border: 1px solid #999
				border-radius: 3px
				color: #999
				font-weight: 500
		.active
			border: 1px solid #999
			border-radius: 3px
			color: #999
			font-weight: 500
	
	.check-desk
		float: left
		width: 15px;
		margin: 0 10px;
		margin-bottom: -1px
		height: 15px;
		display: inline-block;
		background: #fff;
		border: 1px solid rgba(0,0,0,.2);
		border-radius: 3px;
		position: relative;
		-o-transition: all .1s ease;
		transition: all .1s ease;
		
	.checked-desk
		display: block
		width: 15px
		background-image: url('SVG/check_white.svg');
		background-color: #999
		background-size: 15px;
		
	.check
		display: none
		
	footer
		font-size: 13px
		text-align: left
		.madein
			color: #666
		a 
			display: inline-block
			margin-right: 2%
		p 
			display: inline-block
			float: right
		.copy
			margin-right: 10%

