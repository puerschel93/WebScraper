@import url(https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Mulish:wght@400&family=Nunito:wght@200&display=swap)
@import './general.styl'

body
    background #fff

.items-nav
    font-family 'Montserrat' , sans-serif
    font-size 15px
    color #000
    &.active
        color: morado

.style-buttom-morado
    width 206px
    height 66px
    text-indent center
    background: linear-gradient(#CD10FF, #9F06FF)
    font-size 20px
    color white
    border-radius 33px
    font-weight 700
    font-family 'Mulish' , sans-serif

.banner
    div
        p
            font-family 'Mulish' , sans-serif
            font-size 18px
            line-height 30px
            &.style-title-1-banner
                font-family 'Montserrat' , sans-serif !important
                font-size 60px
                line-height 68px
                margin-bottom 25px
                color #001A49

#banner-2
    background-image url('/img/fondo.png')
    height 300px
    background-repeat no-repeat
    background-size cover
    height 772px
    img
        margin-left 88px
        margin-top 65px
    div
        width 610px
        margin-right 75px
        p
            font-family 'Mulish' , sans-serif
            font-size 22px
            color white
            text-align justify
            margin-left 10px
            &.title
                font-family 'Montserrat' , sans-serif !important
                font-size 62px !important
                line-height 68px
                color white
                margin-bottom 70px
                margin-left -25px !important
                
#cards
    margin-bottom 50px
    .title
        font-family 'Montserrat' , sans-serif !important
        font-size 62px !important
        line-height 68px
        color morado

    #card
        box-shadow 0px 5px 6px rgba(0 0 0 0.2);
        .title-card
            font-size 24px
            color morado
            font-weight 700
            font-family 'Montserrat' , sans-serif
            margin-right 15px
        .color-blue
            color azul3
            font-size 20px
            font-family 'Montserrat' , sans-serif
        .style-buttom-azul
            height 57px
            width 180px
            background: linear-gradient(#4B16E0, #191CFC) 
            text-align center
            color white
            font-size 22px
            border-radius 33px
            font-family 'Montserrat' , sans-serif

#banner2
    p
        font-size 60px
        line-height 68px
        font-family 'Montserrat' , sans-serif
        width 537px

footer
    background-image url('/img/footer.png')
    background-repeat no-repeat
    background-size cover
    font-size 20px
    line-height 68px
    font-family 'Montserrat' , sans-serif
    text-align center
    color white


    