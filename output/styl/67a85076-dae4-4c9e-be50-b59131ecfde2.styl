.page-telentEvaluate
	box-sizing: border-box

	.pd-16
		padding: 0 16px

	.title
		padding-top: 60px
		text-align: center
		font-size: 17px
		font-family: Source Han Sans
		font-weight: 800
		color: #333333
		line-height: 35px

	.time-info
		text-align: center
		font-size: 0
		padding: 14px 0

		.img1
			max-width: 42px

		.img2
			max-width: 10px
			margin: 0 3px 0 19px

		.date
			fontScale(8)
			font-family: SimHei
			font-weight: 400
			color: #999999
			line-height: 15px

	.banner
		box-sizing: border-box

		img
			max-width: 100%

	.centent
		font-size: 12px
		font-family: Source Han Sans SC
		font-weight: 400
		color: #126153
		line-height: 18px
		box-sizing: border-box

		img
			max-width: 100%

	.article-tip
		margin-top: 17px
		margin-bottom: 30px
		color: #126153

	.article-info
		color: #999999

	.article-txt
		margin-top: 30px
		color: #333333

	.structure
		margin-top: 18px
		margin-bottom: 21px

		img
			max-width: 100%

	.article-2-txt
		margin-bottom: 25px
		color: #333333

		&.strong-txt
			color: #126153

	.center
		text-align: center

	.talk
		display: flex
		justify-content: space-between
		margin-bottom: 22px

		.talk-item
			flex: 1 1 40%
			fontScale(10)
			font-family: Adobe Heiti Std
			font-weight: normal
			color: #333333
			line-height: 16px

			.txt
				padding: 8px
				min-height: 56px
				box-sizing: border-box
				background: #EEEEEE

				&:last-child
					margin-top: 50px

			&:last-child
				margin-top: 50px

	.share
		padding: 19px 0
		overflow: hidden

		img
			float: right
			max-width: 93px

	.class-items
		justify-content: space-between
		padding-top: 40px
		font-size: 12px

		.class-item
			margin: 0 15px 40px
			display: flex

		.class-bg
			width: 120px
			height: 50px
			background: #EFEFEF

		.class-txt
			flex: 1
			padding: 0 0 0 10px
			p
				&:first-child
					font-size: 12px;
					font-family: Source Han Sans SC;
					font-weight: bold;
					color: #666666;

				&:nth-child(2)
					color: #999
