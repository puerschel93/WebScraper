@import "../css/mixins.styl"

#detail
  width 100%
  height 100%
  .header-top
    height 150px
    width 100%
    position fixed
    top 0
    left 0
    z-index 10
    transform-style preserve-3d
    .sticky-wrapper
      height 150px
      width 100%
      transition all .5s
      &.on
        animation rotate .5s
      .container
        width 100%
        height 50px
        box-sizing border-box
        padding 0 100px
        .position
          float left
          line-height 50px
          padding 0 20px
          &:hover
            background white
          img
            display inline-block
            line-height 50px
          b
            font-size 16px
            font-weight bold
          span
            font-size 16px
            color #898989
        .navbar-nav
          float right
          height 50px
          li
            padding 0 15px
            float left
            line-height 50px
            &:hover
              background white
            &.active
              a
                color red
            a
              color #000
              font-size 16px
              font-weight bold
      .container-bottom
        height 100px
        padding 0 100px
        width 100%
        box-sizing border-box
        background white
        clearFix()
        .navbar-header
          position absolute
          left 100px
          top 50%
          z-index 5
          transform translateY(-50%)
          a
            img
              width 280px
        .search
          position absolute;
          top 50%
          left 50%
          transform translate(-50%,-50%)
          width 600px
          height 38px
          line-height 34px
          border 2px solid #e94840
          background-color #fff
          border-radius 4px
          font-size 14px
          .glyphicon
            position: relative;
            top: 1px;
            display: inline-block;
            font-family: 'Glyphicons Halflings';
            font-style: normal;
            font-weight: 400;
            line-height: 1;
            -webkit-font-smoothing: antialiased
          input
            width 70%
            border none
            height 30px
            outline none
            padding-left 30px
          .searchbtn
            width 20%
            text-align center
            background-color #e94840
            color #fff
            float right
            height 38px
            cursor pointer
  .htit
    margin 150px auto 0
    background #fff
    width 100%
    .htit-center
      height 140px
      line-height 140px
      width 1200px
      margin 0 auto
      .htit-left
        float left
        margin-left 20px
        margin-top 10px
        height 120px
        b
          font-size 36px
        i
          &:nth-child(2)
            em
              color #121212
          &:nth-child(3)
            em
              color: #e84b47
          margin-left 10px
          color #929292
      .htit-right
        float right
        height 120px
        margin-top 15px
        ul
          li
            display inline-block
            width 100px
            text-align center
            line-height 22px
            margin-top 52px
            i
              display block
              color #e84b47
            em
              position: relative;
              bottom: 12px;
              left: 20px;
              color: #e5e5e5
  .navtit
    width 100%
    height 40px
    line-height 40px
    background #323434
    clear both
    ul
      width 1200px
      margin 0 auto
      li
        width 140px
        height 40px
        color #fff
        text-align center
        display inline-block
        &.slibingsclor
          background #424242
        a
          color #fff
  .service-center
    position relative
    .centerleft
      margin 0 auto
      h3
        width 99%
        height 60px
        line-height 60px
        border 1px solid #eaeaea
        font-weight normal
        font-size 14px
        color #e5e5e5
        background #fff
        margin 0
        overflow hidden
        bottom-border-1px(#e5e5e5)
        .paihang
          i
            color #121212
            font-size: 16px;
            margin: 0 20px;
            padding-bottom: 16px;
            cursor: pointer
            &.activity
              border-bottom 4px solid #fb474f
      &.content
        width 1200px
        margin 0 auto
    .boxtab
      a
        color #23527c
        .ctop
          border none
          border-bottom 1px solid #e5e5e5
          cursor pointer
          &:hover
            background #f8f8f8
          .pic
            margin 25px
            float left
            vertical-align middle
            border 1px solid #e5e5e5
          .spm
            width 64%
            float left
            position relative
            top 25px
            i
              overflow: hidden;
              -webkit-line-clamp: 1;
              white-space: nowrap;
              text-overflow: ellipsis;
              width: 99%
              display: block;
              line-height: 42px;
              height: 42px
              &:nth-child(1)
                font-size: 18px;
                color: #1d1515
              &.price
                margin-top: 20px
                b
                  font-size 30px
                  color #fc545e
                  font-weight bold
                  em
                    font-size 14px
                    font-style normal
          .spf
            color #929292
            float right
            margin 150px 60px 0 0
    .company
      height 40px
      line-height 40px
      font-size 18px
      margin 10px 25px
      img
        vertical-align middle
        margin-left 10px
    .profile
      line-height 28px
      margin 10px 25px 25px
      font-size 16px
    #content
      width 900px;
      margin 20px auto
      .conmentss
        width 96%
        border-bottom 1px solid #e5e5e5
        margin 0 3%
        padding-top 20px
        .touxiang
          border-radius 6px
          display inline-block
          vertical-align top
        ul
          display inline-block
          margin-left 20px
          width 92%
          li
            border none
            width auto
            height auto
            display block
            float none
            padding 0
            line-height 28px
            margin 0
            background #fff
            cursor pointer
            span
              span
                img
                  width 11px
                  height 11px
            &.commentdetail
              line-height: 26px;
              font-size: 16px
            &.commentposition
              height: 40px;
              color: #898989
              img
                margin-right 10px
                vertical-align middle
  .supply
    padding-top 60px
    width 100%
    text-align center
    background #fff
    .supplyTil
      font-size 30px
      font-family "微软雅黑"
      font-weight 800
      margin 20px 0 10px 0
      span
        color #e94840
        font-weight 800
      .supplyDes
        margin 0
        font-size 22px
        color #3d3838
  .service
    width 100%
    padding-top 20px
    background #fff
    height 66px
    font-family "微软雅黑"
    box-sizing border-box
    .serList
      width 420px
      margin 0 auto
      .serItem
        float left
        width 33%
        img
          vertical-align middle
          margin-right 10px
  .footer
    width 1200px
    height 170px
    box-sizing border-box
    margin 0 auto
    dl
      width 100%
      height 100%
      display flex
      justify-content space-between
      dt
        width 100px
        font-family " 微软雅黑"
        font-size 18px
        font-weight bold
        margin-left 85px
        position relative
        bottom 20px
        text-align left
        background none
        color #1d1515
      dd
        width 1090px
        height 94px
        a
          display inline-block
          width 8%
          height 30px
          font-size 16px
          color #898989
          text-aligncenter
          font-weight200
          cursorpointer
          font-family"微软雅黑"
          text-align center
          line-height 30px


  .beian
    width 100%
    margin 0 auto
    p
      position relative
      left 80px
      bottom 20px
      font-weight bold
      width 1200px
      margin 0 auto
      background none
      color #1d1515
      font-size 18px
    .hezuo-list
      width 1200px
      margin 0 auto
      clearFix()
      li
        float left
        width 10%
        height 60px
        text-align center
        background #fff
        margin-left 1%
        line-height 55px
        cursor pointer
        img
          vertical-align middle
          border none
  .copyRight
    height 40px
    line-height 40px
    background #fbf8f8
    .copyTil
      width 1200px
      margin 0 auto
      font-size 14px
      color #929292

@keyframes rotate {
  0% {
    transform translateY(-100%) rotateX(90deg)
    opacity .4
  }
  100% {
    transform translateY(0) rotateX(0deg)
    opacity 1
  }
}