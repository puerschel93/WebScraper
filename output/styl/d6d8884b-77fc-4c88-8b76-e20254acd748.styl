.welcome
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background #42b983
  z-index 20
  opacity .5
  .paceMan
    position absolute
    left 45%
    top 45%

@-webkit-keyframes rotate_paceMan_half_up {
  0% {
    -webkit-transform: rotate(270deg);
    transform: rotate(270deg);
  }
  50% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
  100% {
    -webkit-transform: rotate(270deg);
    transform: rotate(270deg);
  }
}

@keyframes rotate_paceMan_half_up {
  0% {
    -webkit-transform: rotate(270deg);
    transform: rotate(270deg);
  }
  50% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
  100% {
    -webkit-transform: rotate(270deg);
    transform: rotate(270deg);
  }
}

@-webkit-keyframes rotate_paceMan_half_down {
  0% {
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg);
  }
  50% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg);
  }
}

@keyframes rotate_paceMan_half_down {
  0% {
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg);
  }
  50% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(90deg);
    transform: rotate(90deg);
  }
}

@-webkit-keyframes paceMan-balls {
  75% {
    opacity: 0.7;
  }
  100% {
    -webkit-transform: translate(-100px, -6.25px);
    transform: translate(-100px, -6.25px);
  }
}

@keyframes paceMan-balls {
  75% {
    opacity: 0.7;
  }
  100% {
    -webkit-transform: translate(-100px, -6.25px);
    transform: translate(-100px, -6.25px);
  }
}

.paceMan > div:nth-child(2) {
  -webkit-animation: paceMan-balls 1s -0.99s infinite linear;
  animation: paceMan-balls 1s -0.99s infinite linear;
}

.paceMan > div:nth-child(3) {
  -webkit-animation: paceMan-balls 1s -0.66s infinite linear;
  animation: paceMan-balls 1s -0.66s infinite linear;
}

.paceMan > div:nth-child(4) {
  -webkit-animation: paceMan-balls 1s -0.33s infinite linear;
  animation: paceMan-balls 1s -0.33s infinite linear;
}

.paceMan > div:nth-child(5) {
  -webkit-animation: paceMan-balls 1s 0s infinite linear;
  animation: paceMan-balls 1s 0s infinite linear;
}

.paceMan > div:first-of-type {
  width: 0px;
  height: 0px;
  border-right: 25px solid transparent;
  border-top: 25px solid #fff;
  border-left: 25px solid #fff;
  border-bottom: 25px solid #fff;
  border-radius: 25px;
  -webkit-animation: rotate_paceMan_half_up 0.5s 0s infinite;
  animation: rotate_paceMan_half_up 0.5s 0s infinite;
  position: relative;
  left: -30px;
}

.paceMan > div:nth-child(2) {
  width: 0px;
  height: 0px;
  border-right: 25px solid transparent;
  border-top: 25px solid #fff;
  border-left: 25px solid #fff;
  border-bottom: 25px solid #fff;
  border-radius: 25px;
  -webkit-animation: rotate_paceMan_half_down 0.5s 0s infinite;
  animation: rotate_paceMan_half_down 0.5s 0s infinite;
  margin-top: -50px;
  position: relative;
  left: -30px;
}

.paceMan > div:nth-child(3),
.paceMan > div:nth-child(4),
.paceMan > div:nth-child(5),
.paceMan > div:nth-child(6)
  background-color: #fff;
  width: 15px;
  height: 15px;
  border-radius: 100%;
  margin: 2px;
  position: absolute;
  -webkit-transform: translate(0, -6.25px);
  transform: translate(0, -6.25px);
  top: 25px;
  left: 70px;
