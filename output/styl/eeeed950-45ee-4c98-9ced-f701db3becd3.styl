.fotocard
   &__list
      display flex
      align-items flex-start
      justify-content space-between
      margin 40px -25px 36px
      @media $afterDesktop
         flex-wrap wrap
         margin 40px 0 0
   &__item
      flex 0 0 33.333%
      max-width 33.333%
      padding 0 25px
      @media $afterDesktop
         flex 0 0 100%
         max-width 100%
         padding 0
   &__img
      border-radius 40px 0 40px 0
      overflow hidden
      flex 0 0 50%
      max-width 50%
      margin-right: 15px
      @media $beforeBigPhone
         border-radius 20px 0 20px 0
      @media $afterDesktop
         flex 0 0 20%
         max-width 20%
      @media $bigPhone
         flex 0 0 36%
         max-width 36%
      img
         border-radius 40px 0 40px 0
         @media $beforeBigPhone
            border-radius 20px 0 20px 0
   &__info
      flex 0 0 50%
      max-width 50%
      padding-right: 10px
      @media $bigDesktop
         min-height 190px
      @media $afterDesktop
         min-height auto
         flex 0 0 80%
         max-width 80%
      @media $bigPhone
         flex 0 0 64%
         max-width 64%

   &__inner
      display flex
      justify-content space-between
      border-bottom solid 1px $grayLight
      padding 0 0 24px
      @media $afterDesktop
         margin 0 0 24px

   &__date
      font-size 14px
      font-weight: 300
      line-height 17px
      padding-bottom: 24px
   &__text
      font-size 21px
      font-weight: 700
      line-height 22px
      @media $desktop
         font-size 18px