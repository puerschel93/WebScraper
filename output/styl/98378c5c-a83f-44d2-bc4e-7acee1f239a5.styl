@media screen and (max-width 991px)
    .content-container::-webkit-scrollbar
        width 0
    .content-container
        padding-right: 0 !important


    .content-wrapper
        margin-right: 0 !important
    .social-links--item .icon
        size(14px)
    .sidebar-menu-item span
        font-size: 13px
    .desk-save-button
        display none
    .panel-links-item
        font-size: 12px
    .mobile-save-button
        display flex
    .col-mb-ot
        margin-bottom: 20px !important
@media screen and (max-width 767px)
    .panel-settings
        display none
    .header-message,.header-logout,.header-profile-name
        display: none
    .header-profile--img,.header-profile
        margin-right: 0
    .sidebar-fixed
        position: fixed
        transform: translateX(-110vw)
        left 0
        right 0
        top: 80px
        bottom: 0
        z-index 1500
        height calc(100vh - 80px)
        width 100%
        padding-right: 0
        transition: .4s ease
    .sidebar-content
        border-radius: 0
    .sidebar-fixed.active
         transform: translateX(0vw)

    .content-container
        padding-left: 0
    .sandwich-menu--icon
        display block
    .header-profile--img
        border-radius: 10px
    .panel-desc
        display none
    .panel-mobile
        display flex
        .panel-toggle--button .icon
            size(15px)
        .panel-toggle--wrapper
            position: fixed
            transform: translateX(-110vw)
            display block
            left 0
            right 0
            top: 80px
            bottom: 0
            z-index 1000
            height calc(100vh - 80px)
            width 100%
            padding-right: 0
            transition: .4s ease
            background-color: #fff
            overflow-y auto
        .panel-toggle--wrapper.active
            transform: translateX(0vw)
        .panel-toggle--button__mobile
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
            width: 34px;
            height: 34px;
            cursor: pointer;
            background-color: rgba(39,39,39,0.05);
            border-radius: 5px 10px;
            .icon
                size(15px)
    .support-request .section-title-v1
        display none
    .support-chat--wrap
        padding-left: 0
    .chats-fixed
        position: fixed
        transform: translateX(-100vw)
        display block
        left 0
        right 0
        top: 80px
        bottom: 0
        z-index 1000
        height calc(100vh - 80px)
        width 100%
        padding-right: 0
        transition: .4s ease
        background-color: #fff
        border-radius: 0
        padding-left: 0
        .chat-container-main
            height calc(100vh - 240px) !important
        .chat-container-header
            border-radius: 0
    .section-dialog
        padding: 0
    .chats-fixed.active
        transform: translateX(0vw)
    .chat-container-message--wrapper
        max-width 85%

@media screen and (max-width 575px)
    .content-wrapper
        margin: 30px 0
    .panel-main,.bg-border
        border-radius: 0
    .profile-section-top__connect
        display none
    .profile-section-top__connect--mobile
        display flex
    .profile-section-top__name
        margin-bottom: 0
    .profile-section-top__status
        margin-bottom: 10px
    .profile-section-top__connect--item
        size(28px)
        margin-right: 15px
    .profile-section-top__connect--item .icon
        size(15px)
    .mobile-save-button
        width 100%
    .s-120
        size(90px)
    .p-30
        padding: 15px
    .lk-table-date-time
        display flex
        flex-direction: column
        align-items: flex-start
        span
            margin-left: 0 !important
    .lk-table-v1 tbody tr td
        padding: 10px
    .section-panel .button-style-blue.w-mc
        width 95%
        margin: 0 auto
        margin-bottom: 30px
    .panel-buttons
        width 100%
        .button-style-blue,.button-style-black
            width 48%
            text-align: center
    .panel-mobile
        .button-style-blue,.button-style-black
            width auto
            text-align: center
    .lk-table-v2
        thead
            display none
        tbody
            display flex
            flex-direction: column

            tr
                display flex
                flex-direction: column
                margin-bottom: 15px
                td
                    padding-bottom: 0
                    &:last-child
                        padding-bottom: 10px
        .lk-table-name-item span
            display none
    .content-wrapper--mobile
        margin-bottom: 0
        .chat-container-main
            height calc(100vh - 271px)

    .chat-container-message--img
        display none
    .chat-container-message--info__message
        margin-left: 0 !important
        margin-right: 0 !important
    .chat-container-header--name
        font-size: 16px
    .chat-container-header--info__desk
        display none
    .chat-container-header--info__mobile
        display flex
        flex-direction: column
        .chat-container-header--desc
            a
                margin-left: 0
    .chat-container-message--wrapper
        width 85%
    .chat-delete-out-msg,.chat-show-message-out--mobile,.chat-show-message-in--mobile
        position: fixed;
        display: none;
        right: 0;
        left: 0;
        bottom: 0;
        top: 0;
        height: 100%;
        width: 100%;
        background: rgba(41,47,57,0.5);
        border-radius: 0;
        z-index: 2;
    .chat-delete-out-msg.active
        display block
    .chat-text-delete__message
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        font-family: 'Oswald 500', sans-serif;
        font-size: 22px;
        color: #fff;
        width: -webkit-max-content;
        width: -moz-max-content;
        width: max-content;
    .chat-container-option--message--wrap
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
    .chat-choise-delet-msg,.chat-container-option--message--item--cancel,.chat-container-option--message--wrap .chat-answer-message
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        background: #fff;
        -webkit-box-shadow: 0px 0px 20px rgba(0,0,0,0.3);
        box-shadow: 0px 0px 20px rgba(0,0,0,0.3);
        border-radius: 10px;
        margin: 15px;
        font-size: 14px;
        font-family: 'Montserrat 500', sans-serif;
        color: #272727;
        padding: 15px;
        cursor: pointer;
        -webkit-transition: all 0.2s ease;
        -o-transition: all 0.2s ease;
        transition: all 0.2s ease;
    .chat-choise-delet-msg .icon
        width: 19px;
        height: 19px;
        margin-right: 15px;
        fill: #FF4B55
    .chat-container-option--message--wrap--buttons
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -ms-flex-direction: column;
        flex-direction: column;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        -webkit-box-shadow: 0px 0px 20px rgba(0,0,0,0.3);
        box-shadow: 0px 0px 20px rgba(0,0,0,0.3);
        border-radius: 10px;
        margin: 15px;
    .chat-container-option--message--wrap .chat-container-option--message--wrap--buttons .chat-container-option--message--item
        padding: 18px;
        margin-bottom: 0;
        width: 100%;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        background: #fff;
    .chat-container-option--message--wrap .chat-container-option--message--wrap--buttons .chat-change-message
        border-bottom: 1px solid rgba(255,255,255,0.05);
        border-radius: 10px 10px 0 0;
    .chat-container-option--message--wrap .chat-container-option--message--wrap--buttons .chat-container-option--message--item .icon
        size(19px)
    .chat-container-option--message--wrap .chat-container-option--message--wrap--buttons .chat-container-option--message--item span
        font-size: 14px
    .chat-container-option--message--wrap .chat-container-option--message--wrap--buttons .chat-delete-message
        border-radius: 0 0 10px 10px;



