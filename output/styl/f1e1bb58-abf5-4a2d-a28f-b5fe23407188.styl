.b-menu-mobile{
  position absolute
  background white
  width 100%
  height auto
  z-index: 2
  top 134px
  box-sizing border-box
  padding 0 50px
  margin-left -100%
  left 0
  opacity 0
  transition margin-left .5s ease, opacity .4s ease
  &._open{
    margin-left 0
    opacity 1
  }
  &__compose{
    padding 18.5px 0
  }
  &__compose-container{
    margin-bottom 65px
  }
  &__wrapper-points{
    position relative
    padding 65px 0
    border-bottom 1px solid cLightBorder
    &:first-child{
      padding-top 50px
    }
    &:last-child{
      border none
    }

  }
  &__points-container{
    margin-bottom 37px
  }
  &__points{
    padding 25px 0
    display flex
    justify-content space-between
    font: 400 32px/32px "MyriadPro", sans-serif
    &:hover{
      &__link{
        color cTextBlue
      }
    }
  }
  &__but{
    &--add{
      background: url('../img/svg/add.svg');
      background-repeat: no-repeat
      width 36px
      height 36px
      margin-right 14px
    }
    &--contacts{
      background: url('../img/contacts.png');
      background-repeat: no-repeat
      width 43px
      height 36px
      margin-right 18px
    }
    &--settings{
      background: url('../img/settings.png');
      background-repeat: no-repeat
      width 46px
      height 46px
      margin-right 14px
    }
    &--logout{
      background: url('../img/logout.png');
      background-repeat: no-repeat
      width 32px
      height 38px
      margin-right 24px
    }
  }
  &__points-left{
    display flex
    align-items center
  }
  &__img{
    &--key{
      background: url('../img/key.png');
      position absolute
      width 42px
      height 42px
      bottom 50px
      right 0
    }
  }
  &__points-right{
    font: 400 27px/27px "MyriadPro", sans-serif
    color cTextWhite
    padding 10px 14px
    border-radius 4px
    background-color cBlueLight 
    &--empty{
      display none
    }
  }
  &__count{
    text-align center
    color cLight
    font: 400 27px/27px "MyriadPro", sans-serif
    margin-left 22px
  }
  &__link{
    text-align center
    transition color .3s ease
    &:hover{
      transition color .2s ease
      color cTextBlue
    }
  }
  &__footer{
    padding-top 27px
    display: flex
    flex-wrap: wrap;
  }
  &__footer-link{
    margin-right 18px
    font: 400 30px/52px "MyriadPro", sans-serif
    color cTextLightGray
    text-decoration inherit
  }
}