$fondonav = #3DB3F7
$fondo = #3DB3F7
$fondoboton = #D7A229
$color1 = #D7A229
$color2 = #D65108
$color3 = #5C1F0A
$color4 = #0267C1


.form-control:focus {
    color: #495057;
    background-color: #fff;
    border-color: #495057;
    outline: 0;
    box-shadow: 0 0 0 0 rgb(0 123 255 / 25%);
}
.col-4
    padding: 0
.col-md-3
    padding: 0

h2,h3,h4,h5,ul,html
    padding: 0
    margin: 0
body 
    background-color: #F9F9F9
    font-family:'Montserrat',sans-serif
    font-size: 14px
.button
    outline: none
input
    outline: none
td
    padding: 0.50em !important
.center
    text-align: center
.mtop16
    margin-top: 16px
.mbot16
    margin-bottom: 16px
.rigth
    float: right
.media-body
    a
        text-decoration: none
        color: #fff 
p
    margin: 0
.btn-two
    background: $fondo
    width: 140px
    font-size: 0.9em !important
    color: #fff
    margin: 10px 0
    &:hover
        background: $color4
        color: #fff
.btn-link
    background: $fondo
    color: #fff
    padding: 15px 15px
    border-radius: 50%
    &:hover
        background: $fondo
        color: #fff
.hide
    visibility: hidden  
.red
    color: red        
.breadcrumb-item+.breadcrumb-item::before {
    padding-top: 10px
}
.wrapper
    min-height: 100vh
    overflow hidden
    .col1
        float left
        position fixed
        z-index 999
        width: 17%
        min-height 100%
    .col2
        margin-left: 17%
        float: left
        width: 83%
.sidebar
    background: #fff
    min-height: 100vh
    .section-top
        background-color: $fondo
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05)
    .logo
        border-radius: 50%
        display: block
        margin: 0 auto
        padding-top: 24px
        width: 35%
        img 
            border-radius: 50%
    .user
        text-align: center
        color: #fff !important
        margin: 16px
        padding-bottom: 15px
        .subtitle
            font-size: 0.8em
        .email
            font-size: 0.8em
.main
    ul
        li
            margin: 10px 0
            a  
                color: #707070 !important
                display: block
                font-size: 1.1em
                padding: 10px 10px
                &:hover
                    background: $fondo
                    text-decoration: none
                    color: #fff !important
                    border-radius: 4px
            a.active
                background: $fondo
                text-decoration: none
                color: #fff !important
                border-radius: 4px
            
                
#dropdownMenuButton
    text-align: start
    color: #707070 !important
    display: block
    font-size: 1em
    padding: 10px 10px
    background: #fff;
    border: none;
    width: 90%
    margin-left: 10px
    outline: none
    &:hover
        background: $fondo
        text-decoration: none
        color: #fff !important
        border-radius: 4px
    &:active
        border: none
    

.navbar
    background: #fff
    a
        color: $fondo !important

.page
    padding: 15px 5px
    .breadcrumb
        background: #fff
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1)
        margin: 0
        a  
            color: $fondo
            &:hover
                text-decoration: none !important
    .row
        .one
            background: #f24f7c
        .two
            background: #6c757d
        .three
            background: #edc755
        .four
            background: #3bc0c3
        .main-icon
            font-size: 36px;
    .panel
        margin-top: 15px
        background: #fff
        border-radius: 6px
        border-bottom: 1px solid $color1
        float left
        width: 100%
        .header
            border-bottom: 1px solid #f4f4f4
            .search
               display inline
               float: right 
               padding: 10px 14px
               #searchTerm
                   border: none
                   border-bottom: 1px solid #a3a3a3
            h2.title
                display: inline-block
                color: #19213d
                font-size: 1.2em
                padding: 12px 16px
        .inside
            padding: 16px
            a
                padding: 5px
                margin-left: 10px
                font-size: 1.2em
            .module-nav
                background: #ffffff
                color: #707070
                &:hover
                    background: $fondonav
                    color: #fff
                &:active
                    background: $fondonav
                    color: #fff
//---------------------------------editar usuarios

.text-user
    span 
        font-size: 0.7em

//--------------------------publicaciones select 
.select-new-publication
    width: 100%
    background: #fff

.choices__list--multiple .choices__item {
    display: inline-block;
    vertical-align: middle;
    border-radius: 20px;
    padding: 4px 10px;
    font-size: 12px;
    font-weight: 500;
    margin-right: 3.75px;
    margin-bottom: 3.75px;
    background-color: $fondo !important;
    border: 1px solid $fondo !important;
    color: #fff;
    word-break: break-all;
}

.choices__inner {
    display: inline-block;
    vertical-align: top;
    width: 100%;
    background-color: #f9f9f9;
    border: 1px solid #f9f9f9 !important;
    padding: 3px;
    font-size: 14px;
    min-height: 35px !important;
    overflow: hidden;
}
.choices
    width: 100%