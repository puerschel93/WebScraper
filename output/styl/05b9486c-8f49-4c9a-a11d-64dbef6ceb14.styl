//botones active
ul.list-categories
    & li
        & a
            &.active
                color : $color-primary-orange
                -webkit-box-shadow: 0px -6px 0px 0px $color-primary-orange
                -moz-box-shadow: 0px -6px 0px 0px $color-primary-orange
                box-shadow: 0px -6px 0px 0px $color-primary-orange
                outline: 0
                & div
                    color : $color-primary-orange

//botones  
ul.list-categories
    list-style: none
    padding: 0
    margin: 0 0 0 10px
    display: flex
    flex-direction: row
    +media-m()
        margin: 0
    +media-s()
        margin: 0
        display: flex;
        flex-direction: row
        width: 1200px
    & li
        display: flex;
        flex-direction: column
        justify-content: center
        text-align: center
        border-left: 0
        background: $color-white   
        width: 90px
        & a
            color : $color-gray-600
            padding: 8px 0
            display: block
            border-right: solid 1px $color-gray-350
            +media-m()
                border-right: solid 1px $color-gray-350
            +media-s()
                border-right: solid 1px $color-gray-350
            &:hover , &:focus  
                color : $color-primary-orange
                -webkit-box-shadow: 0px -6px 0px 0px $color-primary-orange
                -moz-box-shadow: 0px -6px 0px 0px $color-primary-orange
                box-shadow: 0px -6px 0px 0px $color-primary-orange
                outline: 0
            &:hover div, &:focus div 
                color : $color-primary-orange
        & i
            align-self: center
            font-size: 24px
            margin-bottom: 8px
        & div
            font-family: $font-family-ubuntu-regular
            font-size: 10px
            color: $color-gray-550
        &:last-child
            +media-m()
                border-bottom: 0
                border-right: solid 1px $color-gray-350
            +media-s()
                border-bottom: 0
                border-right: solid 1px $color-gray-350

//seccion galeria
.gallery
    background: url(../img/bggallery.png) $color-gray-servife-100 !important
    & .content
        +media-s()
            margin: 0

div.sf-container-flex-proyectos
    display: flex
    flex-direction: column
    & div.sf-container-pictures-proyectos
        display: flex
        flex-direction: column
        & div.sf-container-pictures-tiny
            display: flex
            flex-direction: row
            justify-content: center
            +media-s()
                justify-content: flex-start
                flex-direction: row
                overflow-x: auto
        & div.sf-container-picture-big
            cursor: pointer
            overflow: hidden
            position relative
            margin: 0 5%
            +media-s()
                height : auto
                margin: 0
            .load
                background-image: url(../img/spinner_1.png)
                background-repeat: no-repeat
                background-position: center
                width: 100%
                height: 560px
                z-index: 2
                display none
                position: absolute
                background-color: #F5F5F5
                +media-s()
                    height : 280px
            & .txt_izq
                position: absolute
                left : 0
                background: url(../img/bg_popup_dark.png)
                color : $color-white
                z-index : 2
                padding: 10px 20px
                +media-s()
                    padding: 6px 10px
                    font-size: 12px
            & .txt_der
                position: absolute
                background: url(../img/bg_popup_dark.png)
                color : $color-white
                right : 0
                z-index : 2
                padding: 10px 20px
                +media-s()
                    padding: 6px 10px
                    font-size: 12px
            & img
                +media-m()
                    height : auto
                    flex-grow: 1
                +media-s()
                    height : auto
                    flex-grow: 1
            &:hover .owl-nav
                display: block
                +media-m()
                    display: none
                +media-s()
                    display: none

.owl-nav
    width: 100%
    position: absolute
    top: 0
    margin-top: 25% !important
    overflow: hidden
    display: none
    & button.owl-prev 
        float: left
    & button.owl-next
        float: right
    & button.owl-prev, 
    & button.owl-next
        border-radius: 0
        background: $color-white !important
        border: none
        width: 50px
        height: 50px
        outline: 0
        position: relative
        &:hover
            background: $color-primary !important
            & span 
                color: $color-white
        & span
            position: absolute
            font-size: 40px
            color: $color-primary
            position: absolute;
            top: -3px
            left: 41%
.owl-dots
    margin-top: 15px
    & button
        outline: 0
    & button.active span
        background: $color-primary-orange !important
        outline: 0








