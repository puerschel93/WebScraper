@import '_fonts'
@import '_colors'


//section--form
.form-content-box
	.schedule
		flex 1
		@media screen and (max-width 768px)
			min-width auto
			.schedule__line.current:before, .schedule-value
				min-width auto
				
	.new-option-settings
		background none
		padding 0 0 20px 0
	.new-option__data
		border none
		background none
		padding 0
		@media screen and (max-width 768px)
			flex-direction: column;
	.new-option__schedule-box
		padding 20px 0
		@media screen and (max-width 768px)
			display flex
		
.form-content-box
	border 2px solid Cyan
	position relative
	box-shadow: 0px 0px 2px #0291CE;
	background: linear-gradient(90deg, #1B284B 0%, #21325E 51.56%, #1B284B 100%);
	min-height 50px
	display flex
	&:before
		content ''
		width 350px
		height 10px
		position absolute
		background url('/assets/img/form-top.svg')
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
		transform: translate(-50%, 0);
		left: 50%;
		top -2px
		@media screen and (max-width 1025px)
			width 150px
			background url('/assets/img/form-top-min.svg')
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
			transform: translate(-50%, 0);
	&:after
		content ''
		width 350px
		height 10px
		position absolute
		background url('/assets/img/form-top.svg')
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;		
		transform: translate(-50%,0) rotate(-180deg);
		left: 50%;
		bottom -2px
		@media screen and (max-width 1024px)
			width 150px
			background url('/assets/img/form-top-min.svg')
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
			transform: translate(-50%,0) rotate(-180deg);
	.form__left-top
		border-right: 2px solid #64fff6;
		width: 23px;
		height: 21px;
		position: absolute;
		transform: rotate(45deg);
		left: -14.5px;
		top: -12.5px;
		background: #121c36;
		box-shadow: inset -6px 0 3px -6px #0291ce;
	.form__right-top
		border-left: 2px solid #64fff6;
		width: 23px;
		height: 21px;
		position: absolute;
		transform: rotate(-45deg);
		right: -14.5px;
		top: -12.5px;
		background: #121c36;
		box-shadow: inset 6px 0 3px -6px #0291ce;
	.form__left-bottom
		border-top: 2px solid #64fff6;
		width: 23px;
		height: 21px;
		position: absolute;
		transform: rotate(45deg);
		left: -12px;
		bottom: -12px;
		background: #121c36;
		box-shadow: inset 0 6px 3px -6px #0291ce;
	.form__right-bottom
		border-top: 2px solid #64fff6;
		width: 23px;
		height: 21px;
		position: absolute;
		transform: rotate(-45deg);
		right: -12px;
		bottom: -12px;
		background: #121c36;
		box-shadow: inset 0px 6px 3px -6px #0291ce;

.form-content
	margin 21px 5px
	padding 20px 55px 20px 55px
	flex 1
	border-left: 2px dotted Cyan;
	border-right: 2px dotted Cyan;
	@media screen and (max-width 1024px)
		padding 20px 15px 20px 15px	
	.button
		width: 100% 
		margin-top 5px
	.text
		font-family: Exo2;
		font-style: normal;
		font-weight: 500;
		// font-size: 14px;
		line-height: 150%;
		// text-align: center;

		color: #FFFFFF;
		
		margin 25px 0 10px 0

.form__header
	font-family: Jura;
	font-style: normal;
	font-weight: bold;
	font-size: 28px;
	line-height: 150%;
	text-align: center;
	text-transform: uppercase;

	color: Cyan;
	position relative
	margin-bottom 40px
	@media screen and (max-width 1024px)
		font-weight: bold;
		font-size: 21px;
		line-height: 125%;
		margin-bottom -5px
	&:after
		content ''
		height 1px
		width 350px
		position absolute
		background url('/assets/img/hr.svg')
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
		transform: translate(-50%, 0);
		left: 50%;
		bottom -5px
		@media screen and (max-width 1024px)
			width 200px
.form__info
	display flex
	flex-direction row
	@media screen and (max-width 1024px)
		flex-direction column
		margin 20px 0 0 0
		&:first-child
			margin 0 0 0 0
		.form-info-box
			margin 20px 0 0 0 !important
			&.periods
				min-height 85px
			&.card
				margin 5px 0 0 0 !important
			&:first-child
				margin 0 0 0 0
		.info-card__content
			display none
	.text
		text-align left
		margin-top 0
		margin-bottom 10px
		
.form-info-box
	flex 1
	margin 0 10px
	overflow: hidden;
	&:first-child
		margin 0 10px 0 0
	&:last-child
		margin 0 0 0 10px

.form-info-box.card
	margin-top 35px
	display flex
	flex-direction column
	@media screen and (max-width 1024px)
		&.open
			.info-card__content
				display flex
			.info-card__head
				border-bottom 1px solid Cyan;
				&:after
					transform: rotate(-180deg);
			
	&.first
		.info-card__head
			background: radial-gradient(50% 50% at 50% 50%, #4CFFF4 52.6%, #00CCC0 100%);
			&:before
				background url('/assets/img/card-first.svg')
				background-size: cover;
				background-repeat: no-repeat;
				background-position: bottom;
			.info-card-head__text, .info-card-head__amount
				color #15203D
			@media screen and (max-width 1024px)
				&:after
					background url('/assets/img/dropdown-close--one--dark.svg')
					background-size: contain;
					background-repeat: no-repeat;
					background-position: center;
			
				
		.info-card__content
			background: linear-gradient(180deg, rgba(69, 255, 244, 0) 42.73%, rgba(69, 255, 244, 0.2) 100%), #1D2B4D;
		.info-card-content__text
			font-family: Exo2;
	&.second
		.info-card__head
			&:before
				background url('/assets/img/card-second.svg')
				background-size: cover;
				background-repeat: no-repeat;
				background-position: bottom;
	&.third
		.info-card__head
			&:before
				background url('/assets/img/card-third.svg')
				background-size: cover;
				background-repeat: no-repeat;
				background-position: bottom;

.info-card__head
	height 90px
	display flex
	padding 0 10px

	border-bottom 1px solid Cyan;
	position relative
	background: radial-gradient(50% 50% at 50% 50%, #07646E 52.6%, #0F5266 100%);
	&:before
		content ''
		position absolute
		height 100%
		width 100%
		left 0
		z-index 0
	@media screen and (max-width 1024px)
		padding 0 30px 0 10px
		position relative
		border-bottom none
		&:after
			content ''
			height 100%
			right 10px
			width 10px
			position absolute
			background url('/assets/img/dropdown-close--one.svg')
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;

.info-card-head__text
	margin auto 0
	flex 1

	font-family: Exo2;
	font-style: normal;
	font-weight: 500;
	font-size: 14px;
	line-height: 150%;

	color: Ultralight-Blue;
	
	z-index 1


.info-card-head__amount
	margin auto 0

	font-family: Jura;
	font-style: normal;
	font-weight: bold;
	font-size: 24px;
	line-height: 125%;
	text-align: right;

	color: #FFFFFF;
	
	z-index 1


.info-card__content
	flex 1
	padding 20px
	display flex

	border-left: 1px solid #22596D;
	border-right: 1px solid #22596D;
	border-bottom 1px solid Cyan;

.info-card-content__text
	font-family: Exo;
	font-style: normal;
	font-weight: 500;
	font-size: 12px;
	line-height: 160%;

	color: Ultralight-Blue;
	
	margin auto 0
	span.bold
		font-weight: bold;
	span.blue
		font-family: Exo2;
		color Cyan
		
	>p
		margin 10px 0 0 0
		&:first-child
			margin 0