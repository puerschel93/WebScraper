*
  margin 0;
  padding 0;
  font-family "Source Sans Pro";

$transition = all 0.3s;

@import "header.styl"

.main__content
  margin-top: 50px;

.red__span
  color red;
.gold
  color #FFC82C;

.carousel
  width 80%;
  margin 0 auto;
  position: relative;
  &__img
    &__item
      width:100%;
  &__arrow__left
    position: absolute;
    top 260px;
    background-color #FFFFFF;
    border-radius 0 60px 60px 0;
    height: 85px;
    display: flex;
    align-items: center;
    width: 45px;
    .fa-chevron-left
      padding-left: 5px;
      font-size 30px;
      color grey;
  &__arrow__right
    position: absolute;
    top 260px;
    right 0;
    background-color #FFFFFF;
    height: 85px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    border-radius 60px 0 0 60px;
    .fa-chevron-right
      padding-left: 5px;
      font-size 30px;
      color grey;
  &__items
    position: absolute;
    bottom 0;
    left 665px;
    margin-bottom: 10px;
    .fa-circle
      padding 10px;
      color grey;
      font-size 12px;
.article
  width: 80%;
  margin 0 auto;
  margin-top: 45px;
  &__content
    width: 60%;
    margin 0 auto;
    &__heading
      font-size 36px;
      line-height 52px;
      font-weight 700;
      &__small
        font-size 24px;
    &__text
      color: rgba(59,72,88,0.9);
      font-size 16px;
      line-height 24px;
    &__list
      margin-left: 10%;
      .numbers
        list-style-type decimal;
    &__link
      text-decoration none;
      color #00B5FF;
    &__table
      width: 60%;
      margin 0 auto;
      margin-top: 35px;
      &__heading
        font-size 24px;
        font-weight 600;
        line-height 31px;
      &__textitem
        margin-top: 20px;
        &__heading
          font-size 18px;
          line-height 30px;
          font-weight 600;
        &__text
          color rgba(59,72,88,0.9);
          font-size 16px;
          line-height 24px;
      &__items
        &__container
          margin-top: 30px;
        &__row
          display: flex;
          justify-content: space-between;
          border-bottom 2px solid #E1E8F0;
          padding: 30px;
          align-items: center;
      &__items:last-child .article__content__table__items__row
        border-bottom none;
      &__item
        &__heading
          font-size 18px;
          font-weight 600;
          line-height 23px;
          color #3B4858;
        &__text
          font-size 16px;
          line-height: 20px;
          color #3B4858;
.series__list
  width: 80%;
  margin 0 auto;
  margin-top: 100px;
  &__header
    display: flex;
    justify-content: space-between;
    margin 0 auto;
    padding 1%;
    &__buttons
      display: flex;
      justify-content: space-between;
      width: 3%;
      flex-wrap wrap;
  &__items
    display: flex;
    justify-content: space-between;
    flex-wrap wrap;
    width 100%;
    margin 0 auto;
    &__item
      width: 280px;
      padding 1%;
      &__link
        display: block;
        width: 100%;
        position: relative;
        &__img
          width: 100%;
          border-radius 10px;
          &__timer
            position: absolute;
            right 10;
            top 145px;
            color #FFFFFF;
            background-color: rgba(33,50,72,0.7);
            font-size 12px;
            font-weight 600;
            padding 5px;
        &__heading
          font-size 16px;
          font-weight 600;
          line-height 20px;
          margin-top: 10px;
          color: #3B4858;
        &__text
          font-size 14px;
          line-height: 20px;
          color #3B4859;
          margin-top: 5px;
          &__small
            color: #8392A6;
            font-size 14px;
            line-height: 18px;
            margin-top: 5px;
.gradient
  width 80%;
  margin 0 auto;
  margin-top: 40px;
  &__heading
    font-size 22px;
    font-weight 700;
    line-height 28px;
    color: #3B4858;
  &__one
    margin-top: 15px;
    &__img
      width: 100%;
      height: 370px;
  &__two
    margin-top: 25px;
    &__img
      width: 100%;
      height: 370px;
.range__input
  margin 0 auto;
  margin-top: 40px;
  width: 80%;
  &__header
    font-size 22px;
    line-height: 28px;
    font-weight: 700;
    color #3B4858;
  &__content
    margin-top: 20px;
    display: flex;
    justify-content: space-between;
    &__heading
      color #3B4858;
      font-size 18px;
      line-height: 30px;
    &__input
      width: 70%;
.tabs
  width 80%;
  margin 0 auto;
  margin-top: 40px;
  &__header
    font-size 22px;
    line-height: 28px;
    font-weight: 700;
    text-transform uppercase;
    &__btns
      display: flex;
      justify-content: space-between;
      width: 25%;
      margin-top: 20px;
    &__btn
      border none;
      background-color #FFFFFF;
      color #8392A6;
      font-size 18px;
      line-height: 23px;
      font-weight 700;
      text-transform uppercase;
  &__content
    margin-top: 20px;
    display: flex;
    justify-content: space-between;
    &__item
      width: 180px;
      &__link
        &__heading
          font-size 16px;
          line-height: 20px;
          font-weight 600;
          color #3B4858;
          margin-top: 10px;
        &__text
          font-size 14px;
          line-height: 18px;
          color #8392A6;
          margin-top: 5px;
        &__img
          width: 100%;
          border-radius 10px;
.active
  color #1FB6FF;
.elements
  width: 80%;
  margin 0 auto;
  margin-top: 40px;
  &__header
    font-size 22px;
    font-weight 700;
    line-height: 28px;
    &__content
      margin-top: 55px;
      display: flex;
      justify-content: space-between;
      font-size 16px;
      line-height: 20px;
      font-weight 600;
      &__btn
        border 1px solid #E0E6ED;
        background-color #FFFFFF;
        border-radius 10px;
        padding 10px 40px;
        transition $transition;
      &__btn:hover
        color #FFFFFF;
        background-color #1FB6FF;
      &__onoff
        display: flex;
        &__btn
          &__on
            border-radius 10px 0 0 10px;
            padding 5px 25px;
            border 1px solid #E0E6ED;
            background-color #FFFFFF;
            transition $transition;
          &__on:hover
            color #FFFFFF;
            background-color #1FB6FF;
          &__off
            padding 5px 25px;
            border 1px solid #E0E6ED;
            background-color #FFFFFF;
            border-radius 0 10px 10px 0;
            transition $transition;
          &__off:hover
            color #FFFFFF;
            background-color #1FB6FF;
      &__select
        border 1px solid #E0E6ED;
        border-radius 10px;
        width: 35%;
        font-size 16px;
        line-height: 20px;
      &__input
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 5%;
        &__checkbox
          border none;
          background rgba(131,146,166,0.5);
.emailform__widget
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin 0 auto;
  margin-top: 65px;
  .emailform
    border-top 1px solid #E6E6E6;
    font-size 16px;
    line-height: 20px;
    color: #3B4858;
    width: 70%;
    &__heading
      margin-top: 30px;
    &__rating
      margin-top: 25px;
      &__stars
        margin-top: 10px;
        color #D9DEE4;
    &__comment
      margin-top: 20px;
      &__textarea
        margin-top: 10px;
        height: 270px;
        max-width: 1000px;
        width: 1000px;
        border: 1px solid #E3E9EF;
        border-radius: 3px;
        background-color: #FFFFFF;
        padding 10px;
    &__name__email
      margin-top: 20px;
      display: flex;
      width: 100%;
      .emailform__name
        &__input
          width: 150%;
          border: 1px solid #E3E9EF;
          border-radius: 3px;
          background-color: #FFFFFF;
          height: 40px;
          margin-top: 10px;
          padding 10px;
      .emailform__email
        margin-left: 25%;
        &__input
          width: 150%;
          border: 1px solid #E3E9EF;
          border-radius: 3px;
          background-color: #FFFFFF;
          height: 40px;
          margin-top: 10px;
          padding 10px;
    &__checkbox
      margin-top: 30px;
    &__btn
      margin-top: 40px;
    &__checkbox__label
      color: #3B4858;
      font-size 14px;
      line-height: 18px;
      margin-left: 6px;
    &__btn
      padding 10px 60px;
      opacity: 0.3;
      border-radius: 3px;
      background-color: #8392A6;
      border none;
      color #FFFFFF;
      font-size 16px;
      font-weight 600;
      line-height: 20px;
      transition $transition;
    &__btn:hover
      background-color #1FB6FF;
  .widget
    &__instagram
      height: 380px;
      width: 380px;
      background-color: #ECF0F4;
      display: flex;
      align-items: center;
      justify-content: center;
      &__text
        font-size 22px;
        line-height: 28px;
        color: #3B4858;
    &__soundcloud
      height: 380px;
      width: 380px;
      background-color: #ECF0F4;
      margin-top: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      &__text
        font-size 22px;
        line-height: 28px;
        color: #3B4858;
.toparrow
  display: flex;
  justify-content right;
  width: 90%;
  margin 0 auto;
  margin-top: 70px;
  &__box
    background-color #E0E6ED;
    .fa-chevron-up
      padding 15px;

@import "catalog.styl"
@import "product.styl"
@import "cart.styl"
@import "footer.styl"