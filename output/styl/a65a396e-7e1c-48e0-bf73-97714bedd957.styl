.wrapper
    max-width: 1300px 
    width: calc(100% - 30px)
    margin: 0 auto 

.info__container
    ul  
        display: flex
        justify-content: space-between
        border-bottom: 1px solid #E8E8E8
        padding: 20px 0

        li 
            font-family: 'Roboto', sans-serif
            font-size: 15px
            color: $cor02
            font-weight: 300
            display: flex!important
            align-items: center!important
            justify-content: center!important

            &:first-child
                &:before
                    @extend $ico-before
                    // background-image svg-inline(info1)
                    transition: $transition
                    width: 26px
                    height: 26px
                    margin-right 5px

            &:nth-child(2)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(info2)
                    transition: $transition
                    width: 23px
                    height: 23px
                    margin-right 5px

            &:nth-child(3)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(info3)
                    transition: $transition
                    width: 18px
                    height: 18px
                    margin-right 5px

            &:nth-child(4)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(info4)
                    transition: $transition
                    width: 22px
                    height: 22px
                    margin-right 5px

            &:nth-child(5)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(info5)
                    transition: $transition
                    width: 34px
                    height: 34px   
                    margin-right 5px                                                         
            span  
                font-weight: 600
                margin 0 3px

.mosaico__home
    margin: 50px 0

    @media(max-width: 767px)
        margin: 10px 0

    ul  
        display: grid
        margin: -18px

        @media(max-width: 767px)
            display: flex
            flex-wrap: wrap

        li  
            padding: 9px
            
            @media(max-width:767px)
                margin: 0 auto

            .fbits-banner-item
                height: 100%
                overflow: hidden

            a  
                display: block 
                height: 100%

            img  
                object-fit: cover
                width: 100%
                height: 100%
                max-width: none
                transition all 500ms ease-in-out

                &:hover
                    transform: scale(1.05)


@css {
  .mosaico__home ul {
    grid-template-areas: 'col1 col1 col2 col2 col3 col3' 
                         'col4 col4 col2 col2 col5 col5' 
                         'col6 col6 col6 col7 col7 col7';
    }
}

.a 
    grid-area: col1

.b
    grid-area: col4 

.c 
    grid-area: col2 

.d
    grid-area: col3

.e  
    grid-area: col5 

.f
    grid-area: col6 

.g 
    grid-area: col7

[data-showcase="two"]
    max-width 840px!important

    @media (max-width 1100px)
        margin: 0 auto

    @media(max-width: 991px)
        max-width 100%!important

.showcase__one.banner__showcase
    .fbits-banner-item
        @media (max-width 1100px)
            margin: 0 auto  

    @media(max-width: 991px)
        .fbits-banner-item
            margin: 0 auto
            order: -1
            
.mosaico__list
    @media(max-width: 991px)
        ul  
            li  
                margin:  10px auto
                width 100%
                text-align: center

.banner__showcase
    border-top: 1px solid #E8E8E8
    padding-top 70px
    display: flex
    justify-content: space-between
    align-items: center

    @media (max-width 1100px)
        flex-wrap: wrap

    @media(max-width: 767px)
        padding-top 10px 0

.mosaico__list
    margin: 70px 0

    @media(max-width: 767px)
        margin: 10px 0

    ul  
        display: flex
        justify-content: space-between
        flex-wrap: wrap
        align-items: center

        li  
            flex: 0 0 33%

            @media(max-width: 767px)
                flex: 0 0 100%
        


