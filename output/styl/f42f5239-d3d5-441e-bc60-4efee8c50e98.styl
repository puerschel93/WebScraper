border=0
.marginZero
    margin-left -0.2rem !important
.signIn
    li
        height 1.03rem
        border-bottom 1px solid #fff
        line-height 1.03rem
        position relative
        text-align left
        padding-left 0.2rem
        color #fff
        img
            width 0.4rem
            height 0.41rem
            vertical-align middle
        input
            background transparent
            cursor pointer
            width 4.6rem
            margin-left 0.2rem
            color #fff
            // height 100%


    li:first-of-type
        button
            position absolute
            width 1.7rem
            height 0.58rem
            background-color #fff
            border-radius 0.3rem
            font-size 0.26rem
            top 0.2rem
            color #000
            right 0
    ._border
        border border
        line-height 0
        margin-top 0.6rem
        .yd-checkbox
            position relative
            top 0.2rem
            left -0.1rem
            padding 0
        #agree
            display inline
            white-space nowrap
            margin-left 0.4rem
            font-weight normal
            a
             text-decoration underline
        ._forgetPass
            float right
            margin-top 0.36rem
    ._commmitButton
        text-align center
        margin-top 0.1rem
        ._immedit
            width 4.04rem
            height 0.78rem
            background-color #fff
            color #4e5566
            font-weight bold
            font-size 0.4rem
    ._wechartCom
        height 1.7rem
        // line-height 1.5rem
        text-align center
        a
            // float right
            padding-right 0.1rem
            position relative
            top:1.2rem
            // right 0.5rem

     li:last-of-type
         text-align right
         text-decoration underline
         margin-top 0.7rem
     ._errorMessage
             color #ff5045 !important
             height 0.5rem
             margin 0
             line-height 0.5rem

.signUp
    padding-top 0.3rem



