
// SPACES 



for bkp in "" "xs" "sm" "md" "lg" "xlg" "print"{
 
 +for_device_min(lookup('bkp')){ 

    prefix = ""
    if(bkp != ""){
        prefix = "-"+bkp
    }

        .mx{prefix}-auto{
            margin-right: auto
            margin-left: auto
        }

        for i in (0..12){
            // Margim
            .mt{prefix}-{i}{
                margin-top: (i*i*height-ratio)
            }
            .mb{prefix}-{i}{
                margin-bottom: (i*i*height-ratio)
            }
            .my{prefix}-{i}{
                margin-top: (i*i*height-ratio)
                margin-bottom: (i*i*height-ratio)
            }
            .ml{prefix}-{i}{
                margin-left: (i*i*height-ratio)
            }
            .mr{prefix}-{i}{
                margin-right: (i*i*height-ratio)
            }
            .mx{prefix}-{i}{
                margin-right: (i*i*height-ratio)
                margin-left: (i*i*height-ratio)
            }

            // Padding
            .pt{prefix}-{i}{
                padding-top: (i*i*height-ratio) ;
            }
            .pb{prefix}-{i}{
                padding-bottom: (i*i*height-ratio) ;
            }
            .py{prefix}-{i}{
                padding-top: (i*i*height-ratio)
                padding-bottom: (i*i*height-ratio)
            }
            .pl{prefix}-{i}{
                padding-left: (i*i*height-ratio) ;
            }
            .pr{prefix}-{i}{
                padding-right: (i*i*height-ratio) ;
            }
            .px{prefix}-{i}{
                padding-right: (i*i*height-ratio) ;
                padding-left: (i*i*height-ratio) ;
            }
        }


        // Widht and Height
        for i in (0..10){
            .w-{i}0{
                width: (i*10%)
            }   
            .h-{i}0{
                height: (i*10%)
            }   
            .wv-{i}0{
                width: (i*10vw)
            }   
            .hv-{i}0{
                height: (i*10vh)
            }   
        }
        for i in (0..24){
            .wp-{i}{
                width: (i*i*height-ratio)
            }   
            .hp-{i}{
                height: (i*i*height-ratio)
            }   
        }



        // OPACITY
        for i in (0..10){
            .o{prefix}-{i}0{
                opacity: (i/10)
            }   
        }
        // Display
        for i in "inline" "none" "block" "flex" "inline-flex" "grid" "inline-grid"{
            .d{prefix}-{i}{
                display: unquote(i);
            }   
        }


        //hidden
        .hidden{prefix}{
           display:none;
        }
        .show{prefix}{
           display:initial;
        }


        // FONT-SIZES

        for i in (0..12){
            fs{prefix}-{i}{
                font-size: (font-base+(i*height-ratio)) //Xn-1 + {INT[(n-2)/4] + 1} * 2
            }   
        }

        for i in (1..12){
            .fs{prefix}-{i}rem{
                font-size: (i+0.2rem)
            }   
        }
        for i in (1..12){
            .fs{prefix}-{i}em{
                font-size: (i+0.2em)
            }   
        }

        for i in (0..12){
            .fs{prefix}-{i}{
                font-size: (font-base+(i*height-ratio))
            }   
            .fs{prefix}--{i}{
                font-size: ((font-base)-(i*height-ratio))
            }   
        }


        // line-height: 
        .lh{prefix}-06{
            line-height:0.6;
        }
        .lh{prefix}-07{
            line-height:0.7;
        }
        .lh{prefix}-08{
            line-height:0.8;
        }
        .lh{prefix}-1{
            line-height:1;
        }
        .lh{prefix}-14{
            line-height:1.4;
        }



        // TEXT
        .tr{prefix}{
            text-align:right
        }
        .tl{prefix}{
            text-align:left
        }
        .tc{prefix}{
            text-align:center
        }






        .fs{prefix}-xs{
            font-size: 0.67em; //(font-base - (1*height-ratio))
        }
        .fs{prefix}-sm{
            font-size: 0.75em;//(font-base - (0.5*height-ratio))
        }
        .fs{prefix}-md{
            font-size: 1em //(font-base)
        }
        .fs{prefix}-lg{
            font-size:  1.333em; //(font-base + (2*height-ratio))
        }
        .fs{prefix}-xlg{
            font-size: 1.777em; //(font-base + (3*height-ratio))
        }
        .fs{prefix}-xxlg{
            font-size: 2.369em;//(font-base + (4*height-ratio))
        }
        .fs{prefix}-xxxlg{
            font-size: 3.157em; //(font-base + (5*height-ratio))
        }
        .fs{prefix}-xxxxlg{
            font-size: 4.209em; //(font-base + (5*height-ratio))
        }

 }
}

