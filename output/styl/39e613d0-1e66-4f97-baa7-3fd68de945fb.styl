@import "colors";
@import "macros";

// style the sub nav

a:focus {
    outline: none;
}

body.blocks #header ul a.blog-blocks {
    color: text-active;
}

body.full #header ul a.blog-full {
    color: text-active;
}

body.titles #header ul a.blog-titles {
    color: text-active;
}

.post {
    max-width: 100%;
    -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
            box-sizing: border-box;
    section.body {
        h1, h2, h3, h4, h5 {
            font-family: Helvetica;
        }
        h1 {
            font-size: 30px;
        }
        h2 {
            font-size: 27px;
            color: #777;
        }
    }
}

body.blocks #content {
    #main-content {

        img {
            max-width: 100%!important;
        }
        object {
            max-width: 100%!important;
        }

        .post {
            spanner();

            header {
                margin-top: 6px;
            }

            section.body {
                font-family: Georgia, serif;
                font-size: 16px;
                line-height: 28px;

                .full {
                    display: none;
                }
            }
        }

        @media (min-width: 1651px) {
            .post {
                span3();
            }
        }
        @media (max-width: 1650px) and (min-width: 1281px) {
            .post {
                span4();
            }
        }
        @media (max-width: 1280px) and (min-width: 981px) {
            .post {
                span6();
            }
        }
    }
    @media (max-width: 980px) {
        #main-content {
            .post {
                width: 100%;
                margin-left: 0;
                clear: both;
            }
        }
    }
}

body.full #content {
    #main-content {

        .post {
            margin-left: 0;

            header {
                margin-top: 6px;
            }

            section.body {
                font-family: Georgia, serif;
                font-size: 16px;
                line-height: 28px;
            }

            .excerpt {
                display: none;
            }

            h3.title {
                font-size: 2.1em;
            }
        }
        @media (min-width: 1450px) {
            .post {
                spanner();
                span6();
            }
        }
    }
}

body.titles #content {
    #main-content {
        .post {
            width: 100%;
            margin: 0;
            min-height: 0;
            padding: 5px 10px 0;

            header {
                ul.tags {
                    float: right;
                    margin-right: 15px;
                    margin-top: -26px;
                }
                h3.title {
                    margin: 6px 0 5px 0;
                }
                time {
                    margin-top: 0;
                    margin-bottom: 10px;
                }
            }

            section {
                display: none;
            }

            @media (max-width: 650px) {
                ul.tags {
                    display: none;
                }
            }
        }
    }
}

