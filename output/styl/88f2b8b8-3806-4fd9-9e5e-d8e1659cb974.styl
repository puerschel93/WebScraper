// ホバーアクションの画像ズーム
ex_imgZoomTransition(time = 0.2)
    transition-property: transform !important
    transition-duration: (time)s !important
    transition-timing-function: cubic-bezier(0.37, 0, 0.63, 1) !important
    
    
@keyframes k-ex_link-anime-1-start
    0%
        height: 0
        width: 0
        opacity: 1
    50%
        height: 0
        width: calc(100% + 2px)
        opacity: 1
    100%
        height: calc(100% + 2px)
        width: calc(100% + 2px)
        opacity: 1

@keyframes k-ex_link-anime-1-end
    0%
        height: calc(100% + 2px)
        width: calc(100% + 2px)
        opacity: 1
    50%
        height: 0
        width: calc(100% + 2px)
        opacity: 1
    100%
        height: 0
        width: 0
        opacity: 0
    
// リンク
ex_link-anime-1(animeColor = siteColor['accent'], animeW = 1px, boxBorder = null)
    if boxBorder !=null
        a
            border: solid 1px (boxBorder)
    a
        display: block
        color: siteColor['black']
        text-decoration: none
        position: relative
        box-sizing: border-box
        z-index: 1
        transition-timing-function: ubic-bezier(0.65, 0, 0.35, 1)

        &[href]
            color: @color

        &::before,
        &::after
            content: ''
            position: absolute
            padding: 0
            height: 0
            width: 0
            transition: none
            box-sizing: border-box
            opacity: 0
            z-index: -1
        &::before
            top: -1px
            left: -1px
            border-top: solid (animeW) (animeColor)
            border-right: @border-top
            animation: k-ex_link-anime-1-end .15s .15s cubic-bezier(0.65, 0, 0.35, 1) both
        &::after
            bottom: -1px
            right: -1px
            border-bottom: solid (animeW) (animeColor)
            border-left: @border-bottom
            animation: k-ex_link-anime-1-end .15s cubic-bezier(0.65, 0, 0.35, 1) both

        &:hover
            &::before
                animation: k-ex_link-anime-1-start .15s cubic-bezier(0.65, 0, 0.35, 1) both

            &::after
                animation: k-ex_link-anime-1-start .15s .15s cubic-bezier(0.65, 0, 0.35, 1) both
                
                
// リンク
ex_link-anime-2(bgColor = siteColor['main'])
    a[href]
        position: relative
        z-index: 1
        &::before
            content: ''
            position: absolute
            top: 0
            left: 0
            width: 0
            height: 100%
            transition: width
            background-color: (bgColor)
            z-index: -1
            
        &[aria-current],
        &:hover
            &::before
                width: 100%