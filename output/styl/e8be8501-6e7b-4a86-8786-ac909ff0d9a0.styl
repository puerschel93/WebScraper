.preloader
  position fixed
  top 50%
  left 50%
  width rem(128)
  height rem(24)
  margin rem(-12) 0 0 rem(-64)
  transition .3s ease opacity
  pointer-events none
  cursor default
  z-index 10
  text-align center
  opacity 0

  &.is-visible
    opacity 1

  &__text
    color #fff
    margin rem(5) 0
    text-transform uppercase
    font-family 'Neue Plaak SemiBold', sans-serif
    font-size rem(16)
    font-weight 600
    font-stretch normal
    font-style normal
    line-height normal
    letter-spacing rem(4.3)
    text-align center
    text-shadow 0 1px rgba(0,0,0, .25)

  &__line
    width rem(1)
    height 100%
    background #fff
    margin 0 rem(1)
    display inline-block
    margin-right rem(9)
    animation preload 1000ms infinite ease-in-out

    &_1
      animation-delay 800ms
    &_2
      animation-delay 600ms
    &_3
      animation-delay 400ms
    &_4
      animation-delay 200ms
    &_6
      animation-delay 200ms
    &_7
      animation-delay 400ms
    &_8
      animation-delay 600ms
    &_9
      animation-delay 800ms

@keyframes preload {
  0% {opacity: 1;}
  50% {opacity: 0;}
  100% {opacity: 1;}  
}
