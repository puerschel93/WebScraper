.fund-index-wrapper
  .text-yellow
    color: $yellow_50
  .slogan
      margin-top: 10px
      margin-bottom: 3px
      @media $mobile
        text-align: center
  .banner
    height: 350px
    background-color: #DA5162
    margin-bottom: 0
    color: #fff
    position: relative
    padding: 44px 70px
    @media $mobile
      height: auto
      padding: 20px
    .fund-logo
      display: inline-block
      width: 281px
      margin-bottom: 14px
      margin-right: 20px
      @media $mobile
        display: block
        margin: 0 auto 14px
        width: 90%
    .subtitle
      color: #792927
      font-size: 40px
      margin-bottom: 60px
      @media $mobile
        margin-bottom: 15px
        font-size: 18px
        font-size: 7vw
        text-align: center
    .feature-box-desktop
      display: inline-block
      vertical-align: top
      padding-top: 9px
      p
        margin-bottom: 16px
        font-size: 16px
    .feature-box-mobile
      font-size: 18px
      margin-bottom: 30px
      color: #fff
      span
        margin-right: 15px
      @media $mobile
        width: 235px
        margin: 0 auto
        font-size: 14px
        text-align: center
    .fund-img
      width: 320px
      position: absolute
      right: 50px
      top: 60px
      @media $mobile
        position: relative
        width: 75%
        display: block
        margin: 30px auto
        right: auto
        top: auto
    .icon-checked
      margin-right: 5px
      font-size: 18px
      opacity: .8
    .btn-start
      padding: 0 60px
      @media $mobile
        padding: 0
        width: 75%
        display: block
        margin: 30px auto 10px
    .slogan-box
      width: 240px
      whitespace: nowrap
      text-align: center
      @media $mobile
        width: auto
        margin: 0 auto

  .feature-wrapper
    clearfix()
    @media $mobile
      margin-top: 20px
    .feature
      span(1/3)
      text-align: center
      &:last-child
        .desc-box
          border-right: none
      .circle
          border: 1px solid #DA5162
      @media $mobile
        stack()
        text-align: left
        margin-bottom: 20px

      h5
        font-size: 18px
        margin-bottom: 10px
        margin-top: 10px
        @media $mobile
          margin-bottom: 5px
          font-size: 20px
        &.mobile-element
          color: #DA5162
          display: inline-block
      .desc-box
        text-align: left
        padding: 0 40px
        line-height: 1.5
        border-right:1px solid $gray_30
        @media $mobile
          padding: 0
          margin-left: 95px
          border-right: none
          margin-top: -5px
    .circle
      border-radius: 50%
      width: 170px
      height: 170px
      padding-top: 30px
      margin: 0 auto 20px
      @media $mobile
        float: left
        width: 85px
        height: 85px
        padding-top: 15px
    img
      width: 80px
      @media $mobile
        width: 60px
        display: block
        margin: 0 auto

  .product-group
    margin-bottom: 40px
    font-size: 24px
    @media $mobile
      margin: 30px 0

  .fund-main
    margin-bottom: 0
    padding-bottom: 80px
    @media $mobile
      padding-bottom: 30px
  .fund-product-wrapper
    background-color: $gray_10
    margin-bottom: 0
  .product-box
    clearfix()
    padding: 0 5%
    @media $mobile
      padding: 0
    .product
      border: 1px solid $gray_40
      padding-bottom: 50px
      col(1/2, gutter: 5)
      @media $mobile
        stack()
        margin-bottom: 20px
    .product-header
      padding-top: 20px
      background-color: #DA5162
      padding-bottom: 15px
      margin-bottom: 24px
    h4
      font-size: 24px
      margin-bottom: 10px
      + p
       line-height: 1.7
    h2
      font-size: 46px
      color: #DA5162
      margin-top: 10px
      em
        font-size: 64px
      + p
        width: 80%
        margin: 30px auto 38px
        line-height: 24px
        height: 48px
    .btn-check
      padding: 0 60px

  h6
    font-size: 18px
  .service-wrapper
    color: #DA5162
    text-align: center
    margin-top: 20px
    margin-bottom: 50px
    span
      margin-right: 5%
    i
      margin-left: 5%
  .process-wrapper
    background-color: #DA5162
    overflow: hidden
    margin-bottom: 0
    color: #fff
    @media $mobile
      padding-bottom: 50px
    h3
      font-size: 28px
      margin-bottom: 70px
      margin-top: 10px
      @media $mobile
        margin-top: 30px
        margin-bottom: 40px
    .circle-box
      font-size: 20px
      text-align: center
      border-radius: 50%
      background-color: #FFF
      width: 150px
      height: 150px
      padding-top: 60px
      margin: 0 auto 30px
      color: #DA5162
      position: relative
      z-index: 1
      @media $mobile
        text-align: left
        margin-bottom: 20px
        width: auto
        height: auto
        background-color: transparent
        color: #fff
        padding-top: 0
      em
        display: block
        margin-top: 4px
        @media $mobile
          display: inline
    p
      line-height: 24px
      text-align: center
      padding: 0 20px
      @media $mobile
        text-align: left
        padding: 0
  .process-main
    clearfix()
    @media $mobile
      padding-left: 13px
  .process-box
    span(1/4)
    position: relative
    @media $mobile
      stack()
      border-left: 1px dashed #fff
      padding-left: 20px
      position: relative
      padding-bottom: 20px
      &:last-child
        border-left: none
    .line-box
      position: relative
      &:before
      &:after
        height: 1px
        width: 50%
        position: absolute
        top: -102px
        content: ''
        border-top: 1px dashed #fff
        z-index: 0
      &:before
        left: 0
      &:after
        left: 50%
    .first-child
      &:before
        border-top: none
    .last-child
      &:after
        border-top: none
    span
      border-radius: 50%
      width: 25px
      height: 25px
      line-height: 25px
      margin: 20px auto
      display: block
      background-color: #FFF
      color: #DA5162
      position: absolute
      left: -13px
      top: -25px
    .arrow
      font-size: 22px
      font-family: Arial
      position: absolute
      z-index: 1
      right: -8px
      padding: 0 6px
      background-color: #DA5162
      top: 68px

  .btn-start
    padding: 3px 60px
  .btn-wrapper
    margin-bottom: 0