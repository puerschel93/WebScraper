@keyframes rock
	0%
		transform: rotate(10deg);
		transform-origin: 70px 0;
	50%
		transform: rotate(-10deg);
		transform-origin: 70px 0;
	100%
		transform: rotate(10deg);
		transform-origin: 70px 0;
*
	margin: 0
	padding: 0
	outline: 0
	box-sizing: border-box


h2
	font-size: 29px;
	font-family: "RobotoBoldCondensed", sans-serif;
	color: #fff
	text-transform: uppercase;
	line-height: 0.822;
	text-align: center;
	text-shadow: 2.5px 4.33px 10px rgba(0, 0, 0, 0.75);
	margin-bottom: 20px

h3
	font-size: 40px;
	font-family: "RobotoSlabBold", sans-serif;
	color: rgb(58, 57, 57);
	font-weight: bold;
	line-height: 0.6;
	text-align: center;
	margin: 190px 0 10px
a
	text-decoration: none
	outline: 0;
	&:hover
	&:focus
		color #ffffff
		outline: 0
		text-decoration: none
.ribbon
	display: block;
	width: 100%;
	position: absolute;
	top: -55px;
	left: 0;
	right: 0;
.divider
	display block
	margin: 20px auto 0
.button
	display block
	font-size: 20px;
	font-family: "RobotoSlabBold", sans-serif;
	color: #fefefd
	text-align: center;
	border 1px solid #3b8d3a
	border-radius: 5px;
	background-image: linear-gradient(to top, #164216 0%, #47aa46 100%);
	box-shadow: 0 0 6% 7px rgba(#ffffbe, .35) inset
	margin: 30px auto
	&:hover
		background-image: linear-gradient(to bottom, #164216 0%, #47aa46 100%);
.sale
	display: none



@import 'parts/first_screen'
@import 'parts/second_screen'
@import 'parts/offers'
@import 'parts/spec'
@import 'parts/footer'
/*  Медиа */

@media screen and (max-width: 1200px)
	.contacts .fa
		margin-left: 20px
	.contacts .fa + span
		padding-left: 7px
	.flip-clock-wrapper
		width 100%
	.ribbon
		top: -25px
	#big_tree
		bottom: 15px;
		right: 35px;
	.offer_inner .prices
	.offer_inner .prices .old_price
	.offer_inner .prices .offer_price
		display block
		text-align: center
	.offer_inner .prices .old_price
		line-height: 2
	.offer_links .button
		float: none;
		width: 100%;
	.offer_links .button + a
		float: none;
		text-align: center;
		margin: 15px auto;
		display: block;
		width: 100px;
	.spec_ball.first
		float: none
		left: 0
	.spec_ball.last
		float: none
		right: 10px
	#snow_line
		bottom -160px
	#footer
		height: 475px;
	#footer p:first-child
		padding-top: 190px;
@media screen and (max-width: 992px)
	.contacts a
		display block
	#sale_ball
		right: 30px;
		animation: none
	#second_screen
		padding: 70px 0
	#letter
		padding-top: 25px;
		width 100%
		height: 700px
		p
			max-width: 645px;
	#big_tree
		width: 30%
	#offers
		padding-bottom: 70px
		h3
			margin-top: 110px
		.col-md-3
			width: 50%
			float left
	.offer_wrapper
		height: 510px
	.offer_inner .prices
		display: table
	 .offer_inner .prices .offer_price, .offer_inner .prices .old_price
		 display: table-cell
	.offer_links .button
		width: 50%
		float: left;
		&+a
			float: right;
			text-align: right;
			margin: 15px 15px 0;
			width: auto
	#special
		background-position-y: -30px
	#snow_line
		bottom: -100px
	#footer 
		height: 290px;
		p
			font-size: 18px
			&:first-child
				padding-top: 65px;
				margin-bottom: 15px;
			&:nth-of-type(3)
				padding: 15px 0 10px;
	#spec_logo
		left: 10px
@media screen and (max-width: 768px)
	#sale_ball
		display: none
	.sale
		display: block
	#letter
		height: 590px
		p
			font-size: 16px
			max-width: 530px;
	#green_snow
		display: none
	.spec_ball
		margin-bottom: 10px
		&.last
			margin-bottom: 0
	#snow_line
		bottom: -75px
@media screen and (max-width: 650px)
	.contacts .fa + span
		font-size: 15px
	h3
		line-height: 1
	#offers h3
		margin-top: 85px
	#offer
		width: 100%
	#letter
		width: 90%
		margin: 0 auto
		background-image: none
		background-color: #fff
		padding: 1em;
		border: 16px solid transparent;
		border-image: 16 repeating-linear-gradient(-45deg,
		red 0, red 1em, transparent 0, transparent 2em, #58a 0, #58a 3em, transparent 0, transparent 4em);
	#green_snow
		display block
	.offer_wrapper
		height: 460px
	.offer_links .button
		width: 45%
	.spec_ball .button
		bottom: 52px
	#footer p
		font-size: 16px !important
		&:first-child
			padding-top: 85px;
@media screen and (max-width: 560px)
	.spec_ball
		width: 100%
		.button
			bottom: 70px;
	#snow_line
		bottom: -70px;
	#footer p:first-child
		padding-top: 55px
	