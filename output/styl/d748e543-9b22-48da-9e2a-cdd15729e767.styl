.action
    &__slider 
        position relative
        width 100%
        height 100%
        max-height: 451px
        &--notext
            max-height: 310px
        
        &-inner
            display flex
            align-items stretch
            margin-top 81px
            margin-bottom 86px
            margin-left -24px
            margin-right -24px
            &--main
                margin-bottom 70px
            &--index
                margin-top 100px
                margin-bottom 70px
        @media screen and (max-width: 1024px)
            &-inner
                flex-direction: column
        @media tablet-landscape-large
            &-inner 
                margin-left 0
                margin-right 0

        &-box
            width calc(100%/2 - 48px)
            margin 0 24px
            background-color default-cherry
            padding-top 62px
            padding-bottom 125px
            color white
            .swiper-wrapper
                align-items center
                height unset
                width unset
            &--row
                background-color transparent 
                display flex
                align-items center
                margin 0
                width 100%
                color black
                padding-left 91px
                padding-right 91px
                justify-content space-between
                padding-top 0
                padding-bottom 30px
                                  
                .action__slider-arrow
                    svg 
                        path 
                            fill black 
                    &--left 
                        left 0
                    &--right
                        right 0
                @media phone-portrait
                    .action__slider-arrow
                        top 155px
                .action__slider-content
                    padding-left 0
                    max-width: 508px
                    width 100%
                    padding-right 0
                    margin-bottom 0
                .action__slider
                    max-height: 310px
                    max-width: 511px
                    margin-left 0
                    margin-right 0
                    .action__slider-img
                        background-position center
                        background-size: cover
                        background-repeat no-repeat
            @media phone-portrait 
                &--row
                    padding-left 0
                    padding-right 0 
        @media screen and (max-width: 1024px)
            &-box
                width 100%
                margin-left 0
                margin-right 0
                margin-bottom 20px
                &--row
                    flex-direction: column
                    .action__slider-content
                        padding-right 0
                        padding-bottom 40px

        &-title
            display block
            text-align center
            font-size: 36px
            line-height 40px
            margin-bottom 60px
        @media phone-portrait
            &-title
                font-size 36px
                line-height 40px
        &-slide 
            max-width:310px
            display: flex
            justify-content: center
            align-items: center
            flex-direction: column
            overflow hidden
        @media phone-portrait
            &-slide
                justify-content start
        &-img
            width 100%
            &:before
                content: ''
                display block
                width 100%
                padding-bottom 100%
            img 
                display none
        &-arrow
            position absolute
            top 155px
            width 35px
            height 18px
            background-color transparent
            border none
            padding: 0
            z-index 1
            svg
                width 100%
                height 100%
                path 
                    fill: #ffffff
            &--left
                left 55px
            &--right
                right 55px
                transform rotate(180deg)
        @media phone-portrait
            &-arrow 
                top: 350px
                &--left 
                    transform: rotate(-90deg)
                    left calc(50% - 100px)
                &--right 
                    transform: rotate(90deg)
                    right calc(50% - 100px)

        &-head 
            font-size 13px
            font-family defaut
            text-transform uppercase
            font-family default
            text-align center
            margin-top 40px
            margin-bottom 15px
        @media phone-portrait
            &-head 
                margin-top 110px
        @media phone
            &-head 
                margin-top 150px
        &-text
            font-family default
            font-size 15px
            line-height 25px
            text-align center
            display block
        @media phone-portrait
            &-text
                padding-left 15px
                padding-right 15px
        &-show
            display flex
            justify-content center
            margin-top 70px
        @media phone
            &-show
                margin-top 20px
        &-content 
            padding-left 129px
            padding-right 129px
            text-align: center
            margin-bottom 61px
            .action__slider-title
                margin-bottom 40px
            &--about
                margin-bottom 68px
        @media phone-portrait
            &-content 
                padding-left 15px
                padding-right 15px
        &-desc 
            font-family default
            margin-bottom 28px
            &:last-child 
                margin-bottom 0
    @media phone-portrait
        &__slider 
            max-height 550px
    @media phone
        &__slider 
            max-height 600px










                
            