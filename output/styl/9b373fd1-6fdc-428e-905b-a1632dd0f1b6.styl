@import 'vars.styl'


/* ========= Generales  ========= */
html
	font-size 10px
	
body
	color charcoal-grey
	font-family varela
	font-weight 300

a
	color blue-blue	
	transition(all .2s ease-in-out)

a:hover
	color charcoal-grey
	text-decoration none


/* ========= Header Mobile  ========= */
#header-mobile
	background marine-blue
	width 100%
	
	.logo
		padding 1.2rem 0

	.menu-trigger
		padding 1.8rem 0
		text-align right
		
	nav
		background charcoal-grey
		display none
		
		ul
			margin 0
			padding 0
			
			li
				list-style none
				
				a
					color white
					display block
					font-size 1.4rem
					padding 1.2rem
					

/* ========= Header Desk  ========= */
#mini-bar
	display none
			
header
	display none
	

/* ========= Bloque Destacada  ========= */

.bloque-destacada
	height 250px
	position relative
	
	.des-destacada
		width 100%
		max-width 400px
		top 50%
		transform(translateY(-50%))
		margin auto
		padding 1rem 2rem
		border-radius 0px
		background rgba(62, 67, 73, 0.8)
		position relative
		
		h1
		p
			margin 0
			padding 0
			color white
			text-align center
			font-weight 100
			
		p
			line-height 1.8
				
	.flecha
		width 100%
		bottom 2rem
		position absolute
		text-align center
	

/* ========= Bloque Destacada Inicio  ========= */

.inicio-bloque-destacada
	height 250px
	
	.des-destacada
		width 100%
		top 50%
		transform(translateY(-50%))
		position relative
		
		h1
		p
			margin 0
			padding 0
			color white
			text-align center
			font-weight 100
			
		h1
			font-size 2.4rem
			text-shadow 0 2px 4px rgba(0, 0, 0, 0.4)
			
		p
			line-height 1.8
			
		a
			max-width 25rem
			margin 1rem auto
			padding 1.5rem 2.5rem
			border-radius 4px
			display block
			background white
			
			&:hover
				color white
				background selected
				
		.flecha
			padding-top 2rem
			text-align center
			

/* ========= Secciones  ========= */

.secciones
	max-width 94rem	
	background none
	
	h2
		color selected
		font-size 2rem
		text-align center
		
	img
		margin auto
		
	p
		font-size 1.6rem
		text-align center
		color #767676
		
	a
		max-width 28rem
		margin auto
		margin-bottom 3rem
		padding 1.5rem
		border-radius 4px
		color selected
		font-size 1.4rem
		text-align center
		display block
		background pale-grey
		
		&:hover
			color white
			background selected
			
#seccion-3
	
	a
		max-width 35rem
			

/* ========= Thumbnail  ========= */

.cont-thumbnail
	margin-top 0rem
	
	&:after
		content ''
		clear both
		display table

	.thumbnail
		margin-top 3rem
		padding 3.8rem 0
		background pale-grey
		cursor pointer
		transition(all .2s ease)
		
		&:hover
			background selected !important
			color white !important
		
		h2
		p
			margin 0
			padding 0
			text-align center
			
		h2
			font-size 1.8rem
			line-height 1.6
			font-weight 100
			
		p
			font-size 1.8rem
			
	.img-bodega
		max-height 0rem
		margin-top 3rem
		overflow hidden
		transition(all .2s ease)
		
		img
			max-height 25.4rem
			margin auto
			
/* ========= Descripcion  ========= */

.descripcion
	margin-top 3rem

/* ========= Slider Bodegas  ========= */

.cont-slide
	height 100%
	max-height 60rem
	margin-top 3rem
	position relative
	
	.cont-slide-img
		height auto
		width 100%
		top 50%
		transform(translateY(-50%))
		position absolute
		
		.slide-img
			width 100%
		
			img
				max-height 52.6rem
				margin auto
	
	.cont-slide-nav
		height 4.5rem
		top 50%
		transform(translateY(-50%))
		position relative
		
		.slide-nav
			position absolute
			cursor pointer
			
		.slide-nav-next
			right 0
			
/* ========= Descripción Servicios  ========= */

.descripcion-servicios
	
	h2
		margin-top 4rem
		color selected
		font-size 3rem
	
	.servicios-mostrar		
		width 100%
		padding 2.6rem 0
		color selected
		font-size 1.8rem
		line-height 1.2
		text-align center
		cursor pointer
		background pale-grey
		transition(all .2s ease)
		
		&:hover
			color white
			background selected
			
/* ========= Descripción Servicios  ========= */

.descripcion-instalaciones
	
	h2
		margin-top 4rem
		color selected
		font-size 3rem
		
	.cont-slide-servicios
		position relative
		
		.cont-img-servicios
			
			img
				height auto
				width 100%
				display block
		
		.cont-slide-servicios-nav
			height 4.5rem
			width 100%
			top 50%
			transform(translateY(-50%))
			position absolute
			z-index 100
			
			.slide-servicios-nav
				cursor pointer
				position absolute
				
			.slide-servicios-nav-prev
				left 2rem
				
			.slide-servicios-nav-next
				right 2rem
				
	.pager-instalaciones
		margin-top 2.5rem
		text-align center
		
		li
			height 2.5rem
			width 2.5rem
			margin 0 1rem 0 0
			padding 0
			list-style none
			border 2px solid #f1f2f3
			border-radius 50%
			display inline-block
			cursor pointer
			
		.cycle-pager-active
			
			span
				height 1.5rem
				width 1.5rem
				margin 3px auto 0 auto
				border-radius 50%
				display block
				background #2964db
				

/* ========= Preguntas Antes de Contratar  ========= */

.preguntas-frecuentes
	
	h2
		margin-top 4rem
		color selected
		font-size 3rem

	.pregunta-texto
		font-size 1.6rem
		padding-left 0rem

		.pregunta-titulo
			cursor pointer

			span
				height 2rem
				width 2rem
				margin-right 1.5rem
				border-radius 2px
				color white
				font-size 2.2rem
				line-height 2rem
				text-align center
				display inline-block
				vertical-align middle
				background #2963db

		.pregunta-respuesta
			margin 0
			margin-left 0rem
			padding 1.4rem 1.8rem
			border-radius 4px
			background #f1f2f3
			

/* ========= Ubicación  ========= */

.ubicacion
	
	h2
		margin-top 4rem
		color selected
		font-size 3rem
		
	.ubicacion-mapa
		height 16rem
		width 100%
		
	.ubicacion-direccion
		
		h3
			margin-top 2rem
			margin-bottom 0
			font-size 1.6rem
			line-height 1.5
			font-weight 100
			text-align center
			
	.ubicacion-indicaciones
		
		p
			max-width 40rem
			margin auto
			margin-top 0.5rem
			font-size 1.4rem
			line-height 1.6
			font-weight 100
			text-align center
			
	.ubicacion-consulta-direcciones
		max-width 33.3rem
		margin auto
		margin-top 1.5rem
		padding 1.5rem 4rem
		border-radius 4px
		color white
		text-align center
		cursor pointer
		background selected
		transition(all .2s ease)
		
		&:hover
			color #3e4349
			background #f1f2f3
			
		a
			color inherit
			transition(all .2s ease)
			


/* ========= Contacto  ========= */

.contacto
	
	h2
		margin-top 4rem
		color selected
		font-size 3rem
		
	.img-disponibilidad
		
		img
			margin auto
			
	.texto-disponibilidad
		
		h3
			margin-bottom 5px
			font-size 2rem
			text-align center
			font-weight 100
			
		p
			max-width 29rem
			margin auto
			text-align center
			
	.contacto-formulario
		margin-top 15px
		
		form
			text-align center
			
			input
			select
			textarea
				width 100%
				margin-bottom 2rem
				padding 1.5rem
				border 1px solid #f1f2f3
				border-radius 4px
				font-size 1.4rem
				display block
				transition(border .2s ease)
				
				&:focus
					outline none
					border 1px solid selected
					
			select
				-webkit-appearance none
				-moz-appearance none
				background url(http://dev04.iceberg9.com/wp-content/themes/polibodegas/assets/images/flecha-select.svg) no-repeat 98% center
					
			textarea
				height 15rem
				resize vertical
				
			input[type="submit"]
				width auto
				margin auto
				padding 1.5rem 4rem
				border none
				border-radius 4px
				color white
				background selected
				transition(all .2s ease)
				
				&:focus
					outline none
				
				&:hover
					color #3e4349
					background #f1f2f3
				
				
::-webkit-input-placeholder {

	color: charcoal-grey;

}

:-moz-placeholder {

	color: charcoal-grey;  

}

::-moz-placeholder {

	color: charcoal-grey;  

}

:-ms-input-placeholder {

	color: charcoal-grey;

}

/* ========= Footer  ========= */

.footer-consulta
	margin-top 3.5rem
	
	h2
		margin 0
		padding 0
		font-size 2rem
		text-align center
		
	.footer-boton
		max-width 24rem
		margin auto
		margin-top 2rem
		padding 1.5rem 2.5rem
		border-radius 4px
		color white
		text-align center
		display block
		background selected
		
		&:hover
			color charcoal-grey
			background pale-grey
			
	p
		text-align center
		
.mascara-bodegas
	height 8rem
	width 100%
	margin-top 7rem
	background url(http://dev04.iceberg9.com/wp-content/themes/polibodegas/assets/images/mascara-bodegas.svg)

footer
	background charcoal-grey
	color #fff
	padding 2.5rem 0
	text-align center
	width 100%
	
	.address
		display block
		font-size 1.2rem
		margin 0 auto
		padding 1rem 0 0 0
		width 22rem

	.address-plus
		display block
		font-size 1rem
		margin 0 auto
		padding 1rem 0 0 0
		width 29rem