.content__container
  width: 80%;
  margin 0 auto;
  margin-top: 50px;
  display: flex;
  justify-content: space-between;
.categories
  width: 18%;
  &__header
    background-color #F9FAFC;
    height: 60px;
    display: flex;
    align-items: center;
    &__heading
      color #3B4858;
      font-size 22px;
      font-weight: 700;
      line-height: 28px;
      padding-left: 20px;
  &__items
    &__item
      &__link
        text-decoration none;
        color #8392A6;
        font-size 18px;
        line-height: 60px;
        text-transform uppercase;
        transition $transition;
      &__link:hover
        color $mainColor;
.catalog
  width: 80%;
  &__header
    background-color #F9FAFC;
    height: 60px;
    display: flex;
    align-items: center;
    &__heading
      color #3B4858;
      font-size 22px;
      font-weight 700;
      line-height: 28px;
      padding-left: 10px;
  &__sortview
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
    align-items: center;
    &__sort
      display: flex;
      justify-content: space-between;
      width: 35%;
      &__sort
        &__text
          color #8591A5;
          font-size 18px;
          line-height: 23px;
        &__select
          color #3B4858;
          font-size 18px;
          line-height: 23px;
          background-color #FFFFFF
          border none;
          margin-left: 15px;
          text-transform uppercase;
      &__display
        &__text
          color #8591A5;
          font-size 18px;
          line-height: 23px;
        &__select
          color #3B4858;
          font-size 18px;
          line-height: 23px;
          background-color #FFFFFF
          border none;
          margin-left: 15px;
          text-transform uppercase;
    &__displaytype
      width: 7%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      &__table
        &__row
          display: flex;
          justify-content: space-between;
          margin-top: 2px;
          &__item
            background-color #E1E8F0;
            width: 10px;
            height: 8px;
            transition $transition;
          &__item2
            background-color #E1E8F0;
            width: 20px;
            height: 8px;
            margin-left: 3px;
            transition $transition;
      &__table:hover .catalog__sortview__displaytype__table__row__item
        background-color $mainColor;
      &__table:hover .catalog__sortview__displaytype__table__row__item2
        background-color $mainColor;
      &__items
        &__row
          display: flex;
          justify-content: space-between;
          margin-top: 2px;
          &__item
            background-color #E1E8F0;
            width: 10px;
            height: 15px;
          &__item2
            background-color #E1E8F0;
            width: 10px;
            height: 15px;
            margin-left: 3px;
          &__item3
            background-color #E1E8F0;
            width: 10px;
            height: 15px;
            margin-left: 3px;
      .active
        background-color $mainColor;
  &__items
    margin-top: 25px;
    display: flex;
    justify-content: space-between;
    flex-wrap wrap;
    &__item
      width: 280px;
      padding 2%;
      &__link
        width: 280px;
        text-decoration none;
        display: block;
        border-radius 6px;
        transition $transition;
        &__img
          width: 100%;
          border-radius 5px;
        &__heading
          color #3B4858;
          font-size 22px;
          font-weight 600;
          line-height: 28px;
          margin-top: 10px;
        &__text
          color #FF4949;
          font-size 18px;
          font-weight 600;
          line-height: 23px;
          margin-top: 5px;
        &__btn
          width: 100%;
          padding 12px 95px;
          margin-top: 20px;
          background-color #FFFFFF;
          border 1px solid $mainColor;
          border-radius 6px;
          font-size 16px;
          font-weight 600;
          line-height: 23px;
          transition $transition;
        &__btn:hover
          background-color $mainColor;
          color #FFFFFF;
    &__item:hover .catalog__items__item__link
      box-shadow: 5px 5px 8px rgba(0, 0, 0, 0.16);
  &__loadmore
    display: flex;
    justify-content: center;
    margin-top: 80px;
    &__btn
      padding 15px 50px;
      color #8392A6;
      font-size 18px;
      line-height: 21px;
      border 1px solid #E3E9EF;
      transition $transition;
      background-color #FFFFFF;
      border-radius 6px;
    &__btn:hover
      background-color $mainColor;
      color #FFFFFF;