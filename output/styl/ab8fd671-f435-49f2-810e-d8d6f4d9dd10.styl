@import "nib"
@import "normalize.styl"
@import "icons.styl"


verde = #3fa52e//#ffb730//#ffe600
naranja = #f19300
rojo = #e32721
gris = #6a6a69

*
	box-sizing border-box

body
	font-family 'Oswald', sans-serif
	font-size 90%
	line-height 30px
	background-image url('./img/bg.png')
	background-repeat repeat-x
	background-color #4fbc5b

ul
	margin 0
	padding 0
	

a
	text-decoration none
	//transition all .5s ease
	color naranja
p 
	margin-top 0
	margin-bottom 1.25rem
h1
h2
h3
h4
h5
	margin-top 0
	font-weight 400
h1
	line-height 45px

img
	max-width 100%
	height auto
label
	display block
input[type="text"]
input[type="email"]
input[type="url"]
input[type="tel"]
input[type="number"]
input[type="date"]	
select		
textarea
	width 100%
	height 32px
textarea
	height 120px
.submit
	background-color amarillo
	color #000
	border none
	padding .5rem
	cursor pointer
	&:hover
		background-color #272727
		color amarillo
.wpcf7-submit
.btn
	//border 1px solid black
	font-size inherit
	color black
	background amarillo
	text-align center
	cursor pointer
	padding 10px 52px 10px
	display inline-block
	text-transform uppercase
	outline 0
	position relative
	transition all .3s ease
	transform translateZ(0)
	border 0
	
	&:hover
		background-color: gris //rgba(0,0,0,.4);
		color white
		border-color black
		span
			left -20px 
		i 
			left 76%
			opacity 1
	
	span
		position relative
		left 0
		transition all .2s ease
	i
		font-size 22px
		position absolute
		margin-top -11px
		top 50%
		left 73%
		opacity 0
		transition all .2s ease-out
.wpcf7-submit
.btn-reservar
	background-color naranja
	color white
.clear
	clear both
.columns
	display inline-block
	vertical-align top 
.columns-2
	width 45%
	margin-right 1rem
	&:last-child
		margin-right 0
.columns-3
	width 30%
	margin-right 1rem

.columns-4
	width 22%
	margin-right 1rem
		
@media screen and (min-width: 960px)
	body
		font-size 100%
	
		
.wrap
	max-width 960px
	margin 0 auto
	padding-left 1rem
	padding-right 1rem
	position relative
	
.header
	&-logo
		display block
		width 150px
		margin-top 1rem
	&-enjoy
		display none
	&-menu
		display none
		position absolute
		left 0
		right 0
		top 70px
		background-color verde
		z-index 999
		
		.menu-item
		&-item
			display block
		a
		&-link
			display block
			color white
			padding .5rem 1rem
			transition all .5s ease
			&:hover
				background-color naranja
	&-btn-menu
		display block
		color naranja
		background-color transparent
		border none
		font-size 2rem
		position absolute
		top 0
		right 1rem
		line-height 50px
		outline none
	&-phones 
		color gris
		margin-top 5px
		
.social
	position absolute
	right 1rem
	top 70px
	&-link
		display inline-block
		font-size 1.5rem
		padding .3rem
		
.btn-register
	background-color naranja
	color white
	box-shadow 1px 1px 2px rgba(0,0,0,.75)
	padding 10px 25px 10px
@media screen and (min-width: 768px)
	.header
		&-logo
			float left
			width 200px
		&-enjoy
			display inline-block
			margin-top 10px 
			margin-left 1rem
			//float left	
@media screen and (min-width: 960px)		
	.header
		overflow hidden
		&-logo
			width 200px
			float left
		&-menu 
			background-color transparent
			position static
			display block !important
			/*&-ul 
				display flex
				flex-wrap wrap
				justify-content space-between*/
			.menu-item
			&-item
				display inline-block
			&:last-child
				margin-right -4px
				
			a
			&-link
				background-color verde
				padding .5rem 30.2px
				border-radius 3px 3px 0 0
				
				
		&-phones
			float right
			margin-top 1.3rem
			margin-right 1rem
			span
				display block
				font-size 1.5rem
		&-btn-menu
			display none
	.btn-register
		float right
		margin-right 5px
		margin-top 1.5rem
	.social
		right -27px
		top 160px
		background-color rojo
		border 5px solid white
		box-shadow 1px 1px 2px rgba(0,0,0,.75)
		border-radius 0 15px 15px 0
		border-left 0
		&-link
			display block
			padding .5rem
			color white
			font-size 1.5rem		
.banner
	.owl-buttons
		display none
	.owl-dot
		&.active
			span
				background #869791 !important
		span
			background naranja !important
			border 2px solid white
.main 
	background-color #e3e88a
	padding .5rem
	min-height 200px
	&-tours
	&-hotels
	&-services
		margin-top: 1rem;
		&-container
			display flex
			flex-wrap wrap 
			justify-content space-between
			.mix
				display none
		&-item 
			width 300px
			height 194px
			position relative
			overflow hidden
			border 3px solid naranja
			text-align center
			background-color white
			margin-bottom 1rem
			&.item-hotel
				.main-services-item-description
				.main-hotels-item-description	
					background-color naranja
			&.item-tour
				.main-services-item-title
