			&.item-transport
				.main-services-item-title
					color rojo
					font-size 1.8rem
				.main-services-item-description
					background-color rojo
			&-img 
			&-info
				float left
				width 50%
			&-img 
				img 
					display block
				
			&-title
				color naranja
				font-size 2.5rem
				padding .3rem
				margin-bottom .5rem
			&-description
				line-height 20px
				font-size 13px
				color white
				padding .3rem
				margin-bottom .5rem
				p 
					margin 0
			.btn 
				background-color rojo
				color white
				padding .3rem 1rem
				border-radius 15px
				&:hover
					background-color verde
