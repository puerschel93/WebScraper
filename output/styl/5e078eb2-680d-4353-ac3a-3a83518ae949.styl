			> .feature-label
				width 45px
				height 22px
				top 10px
				left 10px
				border-radius 10px
				font-size: 14px;
				text-align center
				line-height 22px
				
			> .image
				width 165px
				height 130px
				line-height 130px
				display inline-block
				
			> .description
				display: inline-block;
				vertical-align: top;
				background white
				height 130px
				font-size 12px
				width 397px
				padding-top 14px
				min-height initial
				
				> a
					line-height: 26px;
					font-size: 15px;
					text-align left
				
				> .icons
					text-align left
					
					> a
						font-size 12px
						text-decoration none
						color dark-black-color
						display inline-block
				
					> .icon-rateback
						background url("../images/rate-bakcground.svg")
						height 23px
						width 38px
						line-height 23px
						display: inline-block;
						text-align: left;
						padding-left: 7px;
						margin-right 10px
						
					> img
						margin-left 25px;
						
			> .price
				display inline-block
				background white
				height 130px
				vertical-align top
				padding-top 35px
				width 109px
				
				> .price 
					color: dark-black-color
					font-size: 18px;
					font-family bold-font
					margin-right 10px
					
				> .wasprice
					color: #e4003a;
					font-size: 12px;
					text-decoration: line-through;
					vertical-align top
					font-family light-font
					display block
					text-align center
				
			> .add-to-cart
				display inline-block
				vertical-align top
				background white
				width 170px
				height 130px
				font-size: 13px;
				text-align center
				padding-top 30px
				
				> .tocart
					background url("../images/tocart.png") light-blue-color no-repeat 20px center
					height 40px 
					line-height 40px
					color white
					padding 10px 20px 10px 50px
					width 130px
					margin-right 0px
					font-size: 13px;
					
				> .est
					display block
					margin 0px auto
					text-align center
					margin-top 10px

			> .additional_block
				display inline-block
				vertical-align top
				background white
				height 130px

