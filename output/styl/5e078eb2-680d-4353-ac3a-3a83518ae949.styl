// Основная таблица продуктов	
.row.novinki
	
	h2	
		color: dark-black-color
		font-size: 26px;
		line-height: 24px;
	
	.one-product .additional_block
		display none
		
		> .line
			margin 0px 10px
			border-top 1px solid light-grey-color
			height 1px
			padding-bottom 10px
			background #f8f8f8
			
		> .rate
			padding 0px 10px
			font-size: 12px;
			line-height: 27px;
			margin-bottom: 11px;
			color dark-black-color
			background #f8f8f8
			padding-bottom 10px
			
			> .num 
				// background url("../images/rating-background.svg")
				position relative
				line-height 27px
				display block
				width 44px
				// padding-left 8px 
				float left
				margin-right 5px
				text-align: center;
				padding-right: 2px;
				
				> svg
					position absolute
					left 0px
					top 1px
					
				&.svg-grey > svg > polyline
					stroke light-grey-color
					
				&.svg-green > svg > polyline
					stroke #93cd22
					
				&.svg-red > svg > polyline
					stroke red
					
				&.svg-skewed > svg > polyline.normal
					display none

				&.svg-normal > svg > polyline.skewed
					display none
				
			> .est
				float right
				font-size: 12px;
			
			> a
				color dark-black-color
				text-decoration underline

		> .icons
			padding: 10px 5px;
			margin-bottom 10px
			background #e7e7e7
			
			> * 
				margin-right 5px

		>.icons img
			padding 10px 
			border 1px solid #cbcbcb
			vertical-align top
			
		> .icons > .tocart
			background url("../images/tocart.png") light-blue-color no-repeat 20px center
			height 40px 
			line-height 40px
			color white
			padding 10px 20px 10px 50px
			width 130px
			margin-right 0px
			font-size: 13px;
			margin-left 7px
	
	.one-product
		position relative
		border 0px
		outline none
		// border 3px solid #f4f4f4
		// margin-bottom 20px
		height 550px
		// height 544px
		overflow hidden
		margin-bottom 3px
		
		&:hover
			// border 3px solid #00b8d2
			outline 3px solid light-blue-color
			
		&:hover .additional_block, &:hover a.left, &:hover a.right
			display block
			
		&:hover .additional_block
			position relative
					
		a.left, a.right
			display none
			background url('../images/arrow-slider-grey.svg')  no-repeat 50% 50%
			
		a.left:hover, a.right:hover
			// display none
			background url('../images/arrow-slider-blue.svg')  no-repeat 50% 50%
			
		a.left:hover
			transform rotateY(180deg)

		a.right
			transform rotateY(180deg)
			
		a.right:hover
			transform rotateY(0deg)

		> .feature-label
			position absolute
			top 10px
			right 10px
			width 50px
			height 50px
			border-radius 50%
			font-size: 14px;
			text-align center
			line-height 50px
			color white
			z-index 1000
			
		> .feature-label.hit
			background-color: #f54d19;
			
		> .feature-label.new
			background-color: #93cd22;
					
		.image
			height 300px
			line-height 300px
			background white
			text-align center
			
			img
				display inline
				vertical-align middle
							
		.description 
			padding 23px 20px 0px 20px
			text-align center
			background-color: #f8f8f8;
			// min-height 160px
			min-height 130px
			
			a 
				display block
				margin 0px auto 20px auto
				text-align center
				text-decoration underline
				color light-blue-color
				font-family light-font				 
				font-size: 15px;
				
			> .price 
				color: dark-black-color
				font-size: 18px;
				font-family bold-font
				margin-right 10px
				
			> .wasprice
				color: #e4003a;
				font-size: 12px;
				text-decoration: line-through;
				vertical-align top
				font-family light-font
				
.row.novinki.list

		.one-product.bought
			
			&:hover
				border 3px solid #93cd22
				
			> .add-to-cart > .tocart
				background url("../images/tocart.png") #93cd22 no-repeat 20px center
			
		.one-product
			font-size 0px
			height 136px
			border 3px solid white
			margin-bottom 0px
				
			&:hover
