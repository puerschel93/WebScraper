@import './_reset-styles.styl'
@import './_tokens.styl'

html
	font-family ffPrimary

body
	background-color lightGrayishCyan
	max-width 375px
	margin 0 auto
	margin-top 50px

header
	text-align center
	color darkGrayishCyan
	text-transform uppercase
	letter-spacing 10px

main
	background-color white
	padding 20px
	color darkGrayishCyan
	font-weight fwThin
	font-weight fwBold
	border-radius 20px
	margin-bottom 50px

input
	width 100%
	height 40px
	background-color darken(lightGray, 3%)
	border none
	font-family ffPrimary
	text-align end
	color veryDarkCyan
	font-weight fwBold
	font-size fontSizeInput
	background-repeat no-repeat
	background-position-x 15px
	border-radius borderRadius
	background-position-y center
	&[type=number]
		-webkit-appearance none
		-moz-appearance none
	&.bill
		background-image url('../images/icon-dollar.svg')
	&.people
		background-image url('../images/icon-person.svg')
	&.active
		border 1px solid red

.error
	color red
	margin 0
	font-size 1.2rem
	display none
	&.active
		display block

.controls
	&__buttons
		display grid
		grid-template-columns 48% 48%
		gap 4%
		margin-top 16px
		&__item
			margin-bottom 8px
			background-color veryDarkCyan
			color white
			border none
			font-size fontSizeInput
			font-weight fwBold
			font-family ffPrimary
			border-radius borderRadius
			cursor pointer
			&:hover
				background-color lighten(veryDarkCyan, 5%)
			&.active
				background-color lighten(veryDarkCyan, 10%)
			&.input
				background-color darken(lightGray, 3%)
				color darkGrayishCyan
				padding 0
				text-align center
				cursor auto

.output
	background-color veryDarkCyan
	border-radius 20px
	padding 20px
	margin-top 20px
	position relative
	display flex
	flex-direction column
	&__item
		display flex
		align-items center
		justify-content space-between
		margin-top 16px
		&__description
			&__title
				margin 0
				color white
			&__person
				margin 0
		&__number
			font-size 3.5rem
			color strongCyan
			margin-top 5px
	&__reset
		font-size 2rem
		font-weight fwBold
		text-transform uppercase
		margin-top 22px
		background-color strongCyan
		color veryDarkCyan
		width 100%
		border none
		border-radius borderRadius
		padding 10px 0
		cursor pointer
		&:hover
			background-color darken(strongCyan, 5%)
p
	margin-bottom 3px

@media screen and (min-width 1100px)
	body
		max-width 830px
	main
		display flex
		justify-content space-between

	.controls
		&__buttons
			grid-template-columns 32% 32% 32%
			gap 2%


	.output
		width 43%
		position relative
		&__reset
			position absolute
			width 88%
			left 20px
			bottom 20px