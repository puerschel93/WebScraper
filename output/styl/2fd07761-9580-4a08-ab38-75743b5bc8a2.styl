/*!-----------------------------------------------------------------
  .btn - модуль кнопки
 -----------------------------------------------------------------*/
.btn
	cursor: pointer
	text-decoration none
	display: inline-block
	font-weight: normal
	line-height: 1.25
	white-space: nowrap
	vertical-align: middle
	user-select: none
	font-size: 1rem
	transition: all 0.2s ease-in-out
	color var(--colorWhite)
	background-color var(--colorPink)
	border 0
	letter-spacing 2px
	padding 10px 30px
	transition .5s

	&:focus, &:hover
		text-decoration: none
		letter-spacing 6px
		color var(--colorWhite)
	&:focus, &.is-focus
		outline: 0

	&.is-disable
	&[disabled]
		opacity .65
