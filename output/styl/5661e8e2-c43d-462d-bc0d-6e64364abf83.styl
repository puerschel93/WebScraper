.form-section
	padding 40px 0
	background-color: #2A3350
	background-image: url(../img/backs/main-conf.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	margin-top: 35px
	@media screen and (max-width 560px)
		padding 30px 0
.form-title
	font-family: GM
	font-size: 35px
	font-weight: 900
	text-transform uppercase
	margin-top: 10px
	text-align center
	color: #fff
	@media screen and (max-width 991px)
		font-size: 30px
		margin 0 0 30px
	@media screen and (max-width 560px)
		font-size: 26px
	@media screen and (max-width 385px)
		font-size: 24px
.form
	width 100%
	max-width 650px
	margin 0 auto
.input
	background-color: transparent
	display inline-block
	border: 1px solid #4eb7f9
	border-radius: 0
	color: #fff;
	font-family: GM
	font-size: 16px;
	font-weight: normal;
	text-align left
	padding 20px 30px
	transition: all .3s ease
	width 100%
	max-width 320px
	&-mail-section
		float left
	@media screen and (max-width 1199px)
		&-mail-section
			float: none
			display block
			margin 0 auto 10px
			max-width 380px
.button-form-section
	float right
	max-width 320px
	@media screen and (max-width 1199px)
		float: none
		display block
		margin 0 auto
		width 100%
		max-width 380px
@-webkit-keyframes autofill
	to
		font-size: 16px
		color:  #fff;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.input:active
input:-internal-autofill-selected
	background-color: transparent !important
.alert-message
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 600
	line-height: 1
.checking
	display: table;
	width 100%
	max-width 440px
	margin: 5px auto 0
	text-align: left
	@media screen and (max-width 991px)
		max-width 380px
.checking-main
	margin-left: 0
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .62) inset
	100%
		box-shadow: 0 0 15px 10px rgba(red, .62) inset
.checking .check-label
	line-height: 30px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 30px;
	text-align: left;
	font-size: 12px
	font-weight: 100
	color #cfcdcd
	@media screen and (max-width 991px)
		line-height: 20px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #cfcdcd
	transition: all .3s ease
	&:focus
		border-bottom: 1px dashed
		color #cfcdcd
	&:hover
		border-bottom: none
		text-decoration: none
		color #cfcdcd
.checking .check-label:before
	content: '';
	background-color: transparent;
	position: absolute;
	left: 0;
	top: 3px;
	width: 20px;
	height: 20px;
	border none
	border-radius: 0
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 7px;
	top: -10px;
	width: 8px;
	height: 14px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	box-shadow: 1px 1px 0 0 #f7f3aa
	background-color: #cc922f
	animation: none
.check:checked + .check-label:after
	opacity: 1;
	top: 5px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
::-webkit-input-placeholder
::-moz-placeholder
:-moz-placeholder
:-ms-input-placeholder
	color:#fff;
	opacity:1;