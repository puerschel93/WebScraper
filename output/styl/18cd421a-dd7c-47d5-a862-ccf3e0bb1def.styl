@import "normalize.styl"
@import "icon_menu"
@import "fonts.css"
@import "loader.css"
@import "creditos.styl"
@import "searchnone.styl"

blanco_a = #ffffff
blanco_b = #F4F1F1
gris_a = #535353
gris_b = #686767
gris_c = #E7E7E7
gris_trasparente = rgba(0, 0, 0, .2)
verde_a = #009999
verde_trasnparente = rgba(0, 153, 153, .5)
naranja_a = #FF6633

html, body 
	background blanco_a
	color black
	font-family: 'Open Sans', arial;
	font-size 16px

*
	margin 0
	padding 0
	
// utilidades
.U-toggleMenu
	margin-top 16.5em
.U-toggleBuscar
	margin-right 5.8rem !important
	visibility initial !important
.U-toggleWidth
	max-width 11em !important
.U-logo
	height 40px !important
	margin 0 !important
	padding 0.3em !important
	width 80px !important
.U-borderEntrar
	border-radius 0 50% 50% 50%
	height 100%
	width 97%
.U-displayNone
	display none
.U-widhtCero
	width 0% !important
	height 0% !important
.U-creditos
	opacity 0.5 !important
	z-index: 110 !important
.U-visibility
	visibility hidden !important
.U-topCero
	top 0

// header
.Header
	background verde_a
	box-shadow 0px 3px 5px rgba(0, 0, 0, .5)
	color blanco_a
	height 51px
	margin-bottom 1em
	position relative
	z-index 80
	&-movile
		overflow hidden
		position relative
		right 0
		top 0
	&-buscar
		display inline-block
		position absolute
		right 0
		top 0
		vertical-align top
		z-index 70
		&Form
			margin-top 0.5em
			position relative
			transition all 0.3s cubic-bezier(0.37, 0.07, 0, 1.31)
			vertical-align top
			visibility hidden
			& input
				border none
				border-radius 0.3em
				color gris_b
				max-width 0em //4.5em
				padding 0.46em
				vertical-align top
			&Button
				background verde_a
				border none
				border-radius 0 0.2em 0.2em 0
				font-size 1.65em
				margin 0.0352em 0.05em 0 0
				padding 0.16em
				position: absolute
				right 0
				top 0
		& a
			color blanco_a
			font-size 2em
			margin 0.3em 1.7em 0 0
			position absolute
			right 0
			text-decoration none
			top 0
			z-index 70
	&-searchFondo
		background verde_a
		height 50px
		position absolute
		right 0
		top 0
		width 90px

.Menu
	position absolute
	right 0
	top -14em
	transition all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55)
	z-index: 100
	&-lista
		list-style none
	&-item
		margin 2em
		margin-right 0.3em
	&-link
		background gris_trasparente
		border-radius 0.3em
		box-shadow 5px 5px 5px rgba(0, 0, 0, .5)
		color blanco_a
		padding 1.5em 1em 1em 1em
		text-decoration none
		text-shadow 5px 5px 5px rgba(0, 0, 0, .5)

/*contenido*/
.Cont
	// margin 0 auto
	&-inicio
		background url('./images/portadamovile_retina.png')
		background-position center
		background-size cover
		height 100%
		left 0
		position fixed
		top 0
		transition all 0.5s ease
		width 100%
		z-index 100
		& h1
			font-family: arial , sans-serif;
		& h3
			font-family: 'Lato', sans-serif;
		&Header
			background verde_trasnparente
			box-shadow 0px 3px 5px rgba(0, 0, 0, .5)
			height 51px
		&Logo
			height 196px
			margin 0 auto
			margin-top 16vh
			width 300px
			transition all 0.5s ease
			& img
				width 100%
		&Info
			color blanco_a
			margin 0 auto
			text-align center
			width 80%
			& h1
				// font-style italic
			& h3
				width 300px
				margin 0 auto
				margin-bottom 1em
		&Ingresar
			background naranja_a
			border-radius 0.1em
			box-shadow 1px 5px 5px rgba(0, 0, 0, .5)
			color blanco_a
			cursor pointer
			font-size 1.2em
			padding 0.8em 3.5em
			text-shadow 3px 3px 6px rgba(0, 0, 0, .5)
			text-transform uppercase
	&-article
		background blanco_b
		box-shadow 0px 0px 10px rgba(0, 0, 0, .75)
		margin 0.5em 0
		position relative
		&Figure
			box-shadow 2px 2px 5px rgba(0, 0, 0, .5)
			display inline-block
			height 100px
			margin 0.5em
			text-align left
			vertical-align top
			width 80px
			img 
				width 100%
	&-articleInfo
			display inline-block
			margin-top 0.5em
			overflow hidden
			vertical-align top
			width 70%
			&Title
				color gris_a
			&Autor
				color gris_b
				font-family: 'Lato', sans-serif;
				& span
					color gris_a
					font-style italic
					font-size 1.05em
			&Button
				background naranja_a
				border-radius 0.1em
				bottom 0
				box-shadow 1px 5px 5px rgba(0, 0, 0, .5)
				color blanco_a
				cursor pointer
				font-size 1.2em
				height 25%
				line-height 75%
				margin 0 0.3em 0.5em 0
				padding 0.33em 1.3em 0.33em 0.8em
				position absolute
				right 0
				text-shadow 3px 3px 6px rgba(0, 0, 0, .5)
				width 20%

.ContInfo
	background naranja_a
	border-radius 50%
	box-shadow 0px 2px 5px rgba(0, 0, 0, .75)
	height 0
	position absolute
	right 0
	top 0
	transition all 0.5s ease
	width 0
	z-index 2
	&-movie
		background gris_c
		display none
		&Info
			padding 1em
			& h4:nth-child(2)
				color gris_b
				font-family: 'Lato', sans-serif;
			& h4:nth-child(9)
			& h4:nth-child(10)
				font-family: 'Lato', sans-serif;
				font-size 1.3em
			&Sumary
				color gris_a
				margin 1em 0
			&Votes
			&Stars
				color gris_a
				display inline-block
			&Stars
				bottom 0.4em
				float right
				position relative
		& img
			box-shadow 0 2px 5px rgba(0, 0, 0, .75)
			height 100%
			width 100%
	&-atras
		background naranja_a
		border-radius 50%
		bottom 0
		box-shadow 0px 4px 8px rgba(0,0,0,.4)
		color blanco_a
		font-size 2em
		margin 0 0.5em 0.4em 0
		padding 0.4em
		position fixed
		right 0

.U-expandirArticleMovie
	border-radius 50% 0 50% 50%
	height 100%
	width 100%
	// margin-top 10vh

.U-expandirArticleMovie2
	border-radius 0 !important
	width 100% !important
	height auto !important
	margin-bottom 4em !important

@media screen and (min-width: 720px)
	.Cont
		margin 0 auto
		max-width 70%
		&-inicio
			background url('./images/portada_desktop_retina.png')
			background-position center
			background-size cover
		&-article
			margin 0 auto
			margin-top 0.5em
	.ContInfo
		margin 10vh 15% 0 15%
		max-width 70%
		&-atras
			margin-right 16%			

@media screen and (min-width: 960px)
	.Cont
		margin 0 auto
		max-width 90%
		&-article
			display inline-block
			margin 0.5em 0.5em
			width 48%
	.ContInfo
		// margin 10vh 25% 0 25%
		&-movie img
			display inline-block
			width 50%
		&-movieInfo
			display inline-block
			vertical-align top
			width 45%
			
@media (max-width: 1200px) and (orientation: landscape)
	.Cont-inicioLogo
		height 100px
		margin 0 auto
		margin-top 5vh
		width 200px
@media (max-width: 720px) and (orientation: landscape)
	.Cont-inicioLogo
		height 23px
		margin 0 auto
		margin-top 2vh
		width 53px