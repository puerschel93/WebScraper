@import '../../style.styl'

.delivery
    font-size: 12px
    &__steps
        display: flex
        justify-content: center
    &__form
        background-color: $white
        margin-top: -30px
        padding: 15px
        box-shadow: 0px 5px 10px #FFF1E0
    &__back-to-cart
        padding-left: 15px
        padding-right: 15px
        margin-top: 25px
        cursor: pointer
    &__form-content
        margin-top: 20px
    &__form-input
        display: flex
    &__form-section
        flex-basis: 70%
        padding: 0px 15px
    &__heading
        display: flex
        flex-wrap: wrap
        justify-content: space-between
    &__dropship-section
        display: flex
        align-items: flex-end
    &__dropshipper-checkbox
        align-items: center
        width: 15px
        height: 16px
        outline: 2px solid $success
        cursor: pointer
        font-size: 18px
        position: relative
        &:after
            position: absolute
            top: 0
            content: ""
            background-color: $white
            color: $success
            display: inline-block
            visibility: visible
            padding: 0px 3px
        &:checked:after
            content: "âœ“"
            font-size: 12px
    &__inputs
        margin-top: 40px
        display: flex
        flex-wrap: wrap
        justify-content: space-between
    &__input-containing
        transition: all 0.2s
        width: 48%;
        margin-bottom: 10px
        &--disabled
            pointer-events: none
            display: none
    &__summary-section
        flex-basis: 30%
        border-left: 1px solid rgba(255, 138, 0, 0.2)
        padding: 10px 15px

@media only screen and (max-width: 768px)
/* mobile landscape */
    .delivery
        &__form-section
            flex-basis: 60%
        &__inputs
            display: block
        &__summary-section
            flex-basis: 40%
        &__heading
            display: block
        &__dropship-section
            justify-content: flex-start
        &__input-containing
            width: 100%
        &__head-title
            width: 90%

@media only screen and (max-width: 576px)
/* mobile portrait or less than 576px */    
    .delivery
        &__form-input
            display: block
        &__summary-section
            margin-top: 20px
            border: none
@media only screen and (max-width: 380px)
/* mobile portrait (small phone) */
    .delivery
        &__form
            margin-top: -25px

.delivery
    &__input-icon-wrapper
        border: 1px solid #CCCCCC
        &--disabled
            display: none
        &--success
            border: 1px solid $success
        &--error
            border: 1px solid $error
    &__input-and-icon
        display: flex
    &__input-wrap 
        flex-basis: 90%
        position: relative
       
        &--disabled
            display: none
    &__input-text
        font-family: inherit
        width: 100%
        border: 0
        outline: 0
        font-size: 13px
        color: $black
        padding: 25px 10px 13px 10px
        background: transparent
        transition: border-color 0.2s
        &--no-resize
            resize: none
        &::placeholder 
            color: transparent
            display: none
        &:placeholder-shown ~ .delivery__input-label
            font-size: 13px
            cursor: text
            top: 20px
            left: 10px
        &:focus
            padding-bottom: 13px;
            & ~ ^[0]__input-label
                position: absolute;
                top: 10px;
                left: 10px
                display: block;
                transition: 0.2s;
                font-size: 12px;
                color: $gray;
                &--error
                    color: $error
                &--success
                    color: $success
    &__input-label
        position: absolute
        top: 10px
        left: 10px
        display: block
        transition: 0.2s
        font-size: 12px
        color: $gray
        &--error
            color: $error
        &--success
            color: $success
    &__input-status
        flex-basis: 10%
        display: flex
        align-items: center
        justify-content: center
        padding: 10px
    &__input-error-msg
        margin-top: 10px

@media only screen and (max-width: 380px)
/* mobile portrait (small phone) */
    .delivery
        &__input-text
            &:placeholder-shown ~ .delivery__input-label
                font-size: 10px
            &:focus
                padding-bottom: 13px;
                & ~ ^[0]__input-label
                    position: absolute;
                    top: 10px;
                    left: 10px
                    display: block;
                    transition: 0.2s;
                    font-size: 10px;
                    color: $gray;
                    &--error
                        color: $error
                    &--success
                        color: $success
        &__input-label
            font-size: 10px