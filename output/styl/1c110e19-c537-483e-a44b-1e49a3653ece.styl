.home-custom {
    max-width: 100%;
    padding: 0;

    h3 {
        font-size: 1.6rem;
        text-transform: uppercase;
        font-weight: 500;
    }
}

.home-hero {
    position: relative;
    width: 100%;

    .container {
        padding-top: 68px;
        padding-bottom: 230px;
    }
    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        overflow: hidden;

        .background {
            background-color: #1976d2;
            background: linear-gradient(145deg, #0d47a1, #42a5f5);
            height: 100%;
            transform: rotate(-6deg);
            width: 150%;
            margin-left: -25%;
            margin-top: -200px;
        }
    }
}
.hero-button {
    background-color: #FFF;
    text-transform: uppercase;
    font-size: 18px;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, .26);
    //border-radius 50%
    border-radius: 20px;
    padding: 0 24px 0 24px;
    line-height: 40px;
    height: 40px;
    display: inline-block;
    color: #1976d2;
    font-weight: bold;

    &:hover {
        color: #6e6e6e;
        opacity: .9;
    }
}
.hero-text {
    color: #FFF;
    font-size: 2rem;
    h1 {
        font-size: 8vw;
        margin-bottom: 0;
    }
}

@media screen and (min-width: 1600px) {
    .hero-text {
        font-size: 2rem;
        h1 {
            font-size: 8rem;
        }
    }
}

.home-feature {
    position: relative !important;
    padding-top: 75px;
    padding-bottom: 75px;
    width: 100%;
    max-width: 100% !important;

    &.red, &.red p {
        background-color: #dc1431;
        color: #FFF;
    }

    &.slope-top-rtl {
        &::before {
            z-index: 1;
            position: absolute;
            content: " ";
            display: block;
            left: 0;
            top: -100px;
            width: 100%;
            border-style: solid;
            border-width: 0 100vw 100px 0;
            border-color: transparent transparent #dc1431 transparent;
        }
    }

    &.slope-bottom-rtl {
        margin-bottom: 200px;
        &::after {

            z-index: 1;
            position: absolute;
            content: " ";
            display: block;
            left: 0;
            bottom: -100px;
            width: 100%;
            border-style: solid;
            border-width: 0 0 100px 100vw;
            border-color: transparent transparent transparent #dc1431;
        }
    }
}

.footer {
    border-top: 2px solid #000;
    padding-top: 10px;
    margin-top: 30px;
    margin-bottom: 30px;
    text-align: center;
}
