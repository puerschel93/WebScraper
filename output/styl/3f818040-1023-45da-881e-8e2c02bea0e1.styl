.header
    position: relative;
    height: 4rem;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    @media screen and (min-width 767px)
        justify-content: center;
    &__container
        position: relative;
        width: 100%;
        max-width: 980px;
        display: flex;
        justify-content: flex-end;
    &-logo
        position: absolute;
        top: 1.5rem;
        left: 2rem;
        @media screen and (min-width 767px)
            top: 3rem;
            left: 10rem;
    &-burger
        margin-right: 1rem;
        font-size: 2rem;
        @media screen and (min-width 767px)
            display: none;
    &-menu
        list-style: none;
        font-size: 1.8rem;
        font-weight: 600;
        &__unit
            padding: 1rem;
            a
                color: #314584;
        &_mobile
            display: none
            position: absolute
            width: 100%;
            margin: 0;
            padding: 0;
            text-align: center;
            top: 4rem;
            background: #fff;
            z-index: 3;
        @media screen and (min-width 767px)
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            position: relative;
            top: 2.5rem;

    &-contact-button
        display: none
        @media screen and (min-width 767px)
            position: relative;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            top: 2rem;
        & #lang
            border-style: none;
            margin-right: 4rem;
    &__lang
        position: relative;
        right: -2rem;
        font-size: 1.6rem;
        color: #314584;
        font-weight: 600;
    &__contact-us-button
        width: 19rem;
        padding: 2rem;
        border-radius: 5px;
        filter: drop-shadow(0px 5px 5px rgba(25,45,51,0.15));
        background-color: #ffffff;
        border-style: none;
        color: #ff3946;
        font-size: 1.6rem;
        font-weight: 600;
        & img
            position: relative;
            width: 2rem;
            margin-left: 1rem;
            top: .3rem;
    & .show
        display: block;
            