@import '../../common/stylus/mixin.styl'
.ratings
    position: absolute
    top: 174px
    bottom: 0
    left: 0
    width: 100%
    overflow: hidden
    .overview
        display: flex
        padding: 18px 0
        box-sizing: border-box
        .overview-left
            flex: 0 0 137px
            padding: 6px 0
            box-sizing: border-box
            width: 137px
            border-right: 1px solid rgba(7, 17, 27, 0.1)
            text-align: center
            @media only screen and (max-width: 320px)
                flex: 0 0 120px
                width: 120px
                padding: 6px 0
            .score
                margin-bottom: 6px
                line-height: 28px
                color: rgb(255, 153, 0)
                font-size: 24px
            .title
                margin-bottom: 8px
                line-height: 12px
                font-size: 12px
                color: rgb(7, 17, 27)
            .rank
                line-height: 10px
                font-size: 10px
                color: rgb(147, 153, 159)
        .overview-right
            flex: 1
            padding: 6px 0 6px 24px
            .score-warpper
                margin-bottom: 8px
                font-size: 0
                .title
                    line-height: 18px
                    font-size: 12px
                    color: rgb(7, 17, 27)
                .star
                    display: inline-block
                    margin: 0 12px
                    vertical-align: top
                .score
                    display: inline-block
                    vertical-align: top
                    font-size: 12px
                    color: rgb(255, 153, 0)
            .delivery-warpper
                font-size: 0
                .title
                    line-height: 18px
                    font-size: 12px
                    color: rgb(7, 17, 27)
                .delivery
                    margin-left: 12px
                    font-size: 12px
                    color: rgb(147, 153, 159)
    // 评价的列表
    .rating-warpper
        padding: 0 18px
        .rating-item
            display: flex
            padding: 18px 0
            border-1px(rgba(7, 17, 27, 0.1))
            .avatar
                flex: 0 0 28px
                width: 28px
                margin-right: 12px
                img
                    border-radius: 50%
            .content
                position: relative
                flex: 1
                .name
                    line-height: 12px
                    font-size: 10px
                    color: rgb(7, 17, 27)
                    margin-bottom: 4px
                .star-warpper
                    margin-block-start: 6px
                    font-size: 0
                    .star
                        display: inline-block
                        margin-right: 6px
                        vertical-align: top
                    .delivery
                        display: inline-block
                        vertical-align: top
                        line-height: 12px
                        font-size: 10px
                        color: rgb(147, 153, 159)
                .text
                    line-height: 18px
                    color: rgb(7, 17, 27)
                    font-size: 12px
                    margin-bottom: 8px
                .recommend
                    line-height: 16px
                    font-size: 0
                    .icon, .item
                        display: inline-block
                        margin-right: 8px
                        margin-bottom: 4px
                        font-size: 9px
                    .icon-thumb_up
                        color: rgb(0, 160, 220)
                    .item
                        padding: 0 6px
                        border: 1px solid #ccc
                        color: rgb(147,153,159)
                        background: rgb(255,255,255)

                .time
                    font-size: 10px
                    font-weight: 100
                    line-height: 12px
                    color: rgb(147, 153, 159)
                    position: absolute
                    right: 0
                    top: 0
