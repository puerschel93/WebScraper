.video-review
  .title1
    margin-bottom 100px
    @media (max-width: 1267px)
      margin-bottom 70px
    @media (max-width: 1023px)
      margin-bottom 50px
    @media (max-width: 767px)
      margin-bottom 30px
  &__heading
    display flex
    justify-content space-between
    div
      width 350px
      @media (max-width: 1267px)
        text-align right
      a
        color var(--red)
        transition .5s
        &:hover
          @media (hover)
            opacity .5
        @media (max-width: 1680px)
          margin-left: 80px;
        @media (max-width: 767px)
          margin-left 0
  &__slider
    position relative
    .slick-list
      margin 0 -15px
    .slick-arrow
    .slick-counter
      top -65px
      right 0
      @media (max-width: 1267px)
        top -45px
      @media (max-width: 1023px)
        display none
      &.slick-prev
        right 150px
        @media (max-width: 1267px)
          right 105px
  &__slide
    display grid !important
    grid-template-columns 1fr 1fr
    grid-gap 30px
    margin 0 15px
    @media (max-width: 1023px)
      display none !important
      margin 0
      &:first-child
        display block !important
  &__item
    position relative
    @media (max-width: 1023px)
      margin-bottom 20px
      &:last-child
        margin-bottom 0
        @media (max-width: 1023px)
          display none
    video
      width 100%
      height auto
      display block
  &__overlay
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-size cover
    display flex
    justify-content center
    align-items center
    &::before
      content ''
      display block
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      background linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(88, 88, 88, 0.1) 53.65%, rgba(0, 0, 0, 0.6) 93.23%)
    div
      position absolute
      color var(--white)
      bottom 35px
      left 0
      width 100%
      text-align center
      padding 0 50px
      @media (max-width: 1267px)
        bottom 15px
        padding 0 30px
      @media (max-width: 1023px)
        bottom 20px
      @media (max-width: 767px)
        bottom 15px
        padding 0 15px
      h3
        font-weight 700
        font-size 26px
        line-height 1.2
        text-transform uppercase
        margin 0
        margin-bottom 10px
        @media (max-width: 1680px)
          font-size 18px
        @media (max-width: 1023px)
          font-size 26px
        @media (max-width: 767px)
          font-size 12px
          margin-bottom 5px
      p
        font-weight 500
        font-size 20px
        line-height 1.2
        margin 0
        @media (max-width: 1680px)
          font-size 16px
        @media (max-width: 1023px)
          font-size 20px
        @media (max-width: 767px)
          font-size 12px
  &__button
    position relative
    border none
    cursor pointer
    transition .5s
    width 74px
    height 74px
    background url(../img/icons/play-circle.svg) no-repeat center
    background-size contain
    @media (max-width: 1680px)
      width 54px
      height 54px
    &:hover
      @media (hover)
        transform scale(1.1)
