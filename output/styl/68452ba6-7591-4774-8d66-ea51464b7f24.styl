// base components style

// BASE STYLE BREADCRUMBS

.b-breadcrumbs
	&__item
		display inline-flex
		margin-right 20px
		text-decoration none
		position relative
		color #0b0b0e
		line-height 1.2
		transition .25s opacity
		&:after
			content ''
			position absolute
			pointer-events none
			width 10px
			height 1px
			background-color #0b0b0e
			right -15px
			top 50%
			margin-top -1px
		&_current
			margin-right 0
			&:after
				content none
		&:hover:not(span)
			opacity .6
			
// END BASE STYLE BREADCRUMBS

// BASE STYLE PAGINATION

.b-pagination
	display flex
	justify-content center
	&__link
		width 40px
		height 40px
		display inline-flex
		align-items center
		justify-content center
		text-decoration none
		border 1px solid #0f1e35
		color #343434
		font-size 16px
		margin-left -1px
		transition .25s opacity
		&_active
			background-color #c9c9c9
			cursor default
		&:first-child
			border-radius 6px 0 0 6px
		&:last-child
			border-radius 0 6px 6px 0
		&:hover:not(.b-pagination__link_active)
			background-color #c9c9c9
		&_dotted
			pointer-events none

// END BASE STYLE PAGINTAION

// BASE STYLE NAV
	
.b-nav
	display flex
	height 40px
	&__wrap
		display flex
		align-items center
		padding 0 20px
		&_hover-dropdown
			position relative
			@media $working_hover
				&:hover
					.b-nav
						&__inner
							opacity 1
							visibility visible
	&__item
		text-decoration none
		color #000
		@media $working_hover
			transition .25s opacity
			&:hover:not(.b-nav__item_act):not(span)
				opacity .6
		&_act
			font-weight 700
	&__inner
		z-index 1
		opacity 0
		visibility hidden
		position absolute
		top 100%
		left 0
		padding 12px 0
		box-shadow 0px 10px 5px 0px rgba(0,0,0,0.25)
		transition .25s opacity, .25s visibility
		transition-delay .25s
		background-color #fff
		border-radius 0 0 6px 6px
	&__inner-wrap
		display block
	&__inner-item
		padding 10px
		text-decoration none
		color #000
		display block
		@media $working_hover
			transition .25s opacity
			&:hover
				opacity .6
		
	
 // END BASE STYLE NAV

.loading
	color transparent!important
	min-height .8rem
	pointer-events none
	position relative

.loading::after
	animation loading .5s infinite linear
	border .1rem solid #fff
	border-radius 50%
	border-right-color transparent
	border-top-color transparent
	content ""
	display block
	height .8rem
	left 50%
	margin-left -.4rem
	margin-top -.4rem
	position absolute
	top 50%
	width .8rem
	z-index 1

@keyframes loading {
	0% {
		transform: rotate(0)
	}
	100% {
		transform: rotate(360deg)
	}
}