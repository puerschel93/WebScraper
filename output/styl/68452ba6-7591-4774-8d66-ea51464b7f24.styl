html
	height 100%
	font-size $rootFontSize, false
	user-select auto
	scroll-behavior smooth
	overflow-x: hidden;

body
	font-family 'Montserrat', sans-serif
	min-height 100%
	position relative
	line-height 1.2
	-webkit-text-size-adjust 100%
	-webkit-font-size-adjust 100%
	display flex
	flex-direction column
	font-size 16px
	font-weight 400
	background-position top right
	background-repeat no-repeat
	background-size contain	
	@media $min_md
		font-size 18px
	@media (max-width: 360px)
		width 360px
	&:before
		content ''
		height 100%
		width 100%
		top 0
		left 0
		position absolute
		background-color #fff
		opacity .8
		pointer-events none

img
	display block
	max-width 100%
	height auto

h1, h2, h3, h4, h5, .b-title-1, .b-title-2, .b-title-3, .b-title-4, .b-title-5
	display block
	line-height 1.2
	letter-spacing -0.0415625em
	font-weight 800
	font-family 'Comfortaa'
	margin-bottom 20px
	@media $min_md
		margin-bottom 20px
		
.zoomIn {
	-webkit-animation-name: zoomIn;
	animation-name: zoomIn;
}

@keyframes zoomIn {
  0% {
    opacity: 0;
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  100% {
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

.zoomOut {
  -webkit-animation-name: zoomOut;
  animation-name: zoomOut;
}

@keyframes zoomOut {
  0% {
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  100% {
    opacity: 0;
    -webkit-transform: scale(0);
    transform: scale(0);
  }
}


h1, .b-title-1
	font-size 25px
h2, .b-title-2
	font-size 18px
	@media $min_md
		font-size 20px
.b-title-2-up
	text-transform uppercase
h3, .b-title-3
	font-size 20px
h4, .b-title-4
	font-size 18px
h5, .b-title-5
	font-size 17px
	
.fa
	font-family 'Font Awesome'

p
	margin-bottom 20px
	line-height 1.5
    margin 0 0 1em 0
	&:last-child
		margin-bottom 0

ul, ol
	margin-bottom 20px
	list-style-position inside
	li
		margin-bottom 10px
		line-height 1.5

ul.custom-bullet
	list-style none
	li
		padding-left 24px
		position relative
		&:before
			content "\f101"
			font-family 'Font Awesome'
			font-weight 900
			font-size 14px
			position absolute
			left 0
			top 4px
			
		

table
	width 100%
	border 1px solid #d3d3d3
	border-collapse separate
	overflow hidden
	margin 27px 0
	th, td
		padding 14px 20px
		border-bottom 1px solid #d3d3d3
		border-right 1px solid #d3d3d3
		line-height 20px
		font-size 14px
		vertical-align top
		&:last-child
			border-right 0
	th
		font-weight 500
		font-size 16px
		background-color #ebebeb
		text-align left
		&.small
			width 580px
	tr
		&:last-child
			td, td
				border-bottom 0

i
	font-style italic

b, strong
	font-weight 600

button
	border 0

a
	cursor pointer
	text-decoration none
	transition all 0.15s linear
	color #cd2653;

textarea
	line-height 1.5

._no-border, ._no-border *
	border 0

._img-left,
._img-right
	margin-bottom 14px

._img-left
	float left
	margin-right 14px

._img-right
	float right
	margin-left 14px

.text-center
	text-align center
	
.text-right
	text-align right
	
.text-left
	text-align left
	
.text-uppercase
	text-transform uppercase
	
.error
	border-color red

.dnone
	display none


.text
	> p
		&:last-child
			margin-bottom 0

.fancybox-skin
	box-shadow none !important
	border-radius 0

.fancybox-wrap
	opacity 0
.compensate-for-scrollbar
	padding-right 17px

.owl-carousel .owl-item
	-webkit-transform translateZ(0)

.swiper-container
	.swiper-prev, .swiper-next
		vAlign()
	.swiper-prev
		left 0
	.swiper-next
		right 0

.b-form
	text-align center

.b-input, .b-textarea, .b-select
	width 100%
	outline none
	display block
	font-family "Montserrat", Sans-serif, Montserrat
	font-size 18px
	font-weight 300
	border 2px solid #e7e7e7
	background-color #fff
		
// BASE BUTTONS STYLES

.b-btn
	display inline-flex
	align-items center
	justify-content center
	text-decoration none
	border-radius 4px
	&_md
		height 42px
		padding 0 16px
		font-size 15px
	&_lg
		height 52px
		padding 0 20px
		font-size 16px
	&_base
		border 1px solid black
		color black
		background-color transparent
	&_red
		background-color red
		color #fff
	&_brand-filled
		background-color #4A4242
		color #fff
		font-weight 500
		@media $working_hover
			&:hover
				background-color #917F7F
	i
		margin-right 6px
		&:last-child
			margin-right 0

.b-btn-shadow
	text-align center
	display block
	position relative
	cursor pointer
	outline none
	font-family 'Comfortaa'
	font-size 18px
	font-weight 400
	line-height 1.2em
	letter-spacing 0.2px
	color #212121
	border 1px solid #BBBBBB
	background-color #FFFFFF
	box-shadow 0px 2px 27px -10px rgba(0,0,0,0.33)
	&:before
		content ''
		position absolute
		left 0
		bottom 0
		height 100%
		width 0
		transition all .3s linear
	&:after
		content ''
		position absolute
		width 17px
		height 17px
		border-bottom 1px solid #212121
		border-left 1px solid #212121		
		transform rotate(-45deg)
		top 12px
		right 30px
	&:hover
		&:before
			width 3px
			background #4A4242
	&_active,
	&.js-act
		color white
		background-color #4A4242
		box-shadow 0px 2px 46px -15px rgba(0,0,0,0.69)
		&:after
			border-bottom 0
			border-left 0
			top 22px
			border-top 2px solid white
			border-right 2px solid white

.b-svg
	letter-spacing -0.015em
	font-family 'Comfortaa'
	font-size 20px
	font-weight 200
	color white
	word-break break-word
	display block
	max-width 100%
	fill none


// END BASE BUTTONS STYLES
		
// RADIO AND CHECKBOXES STYLES
		
.b-checkbox, .b-radiobox
	&__input
		position absolute
		width 1px
		height 1px
		overflow hidden
		clip rect(0 0 0 0)
		&:checked
			+
				.b-checkbox, .b-radiobox
					&__label
						&:after
							opacity 1
						&:before
							background-color #000
							border-color #000
	&__label
		display block
		position relative
		padding-left 22px
		cursor pointer
		&:before, &:after
			position absolute
			
.b-checkbox
	&__label
		&:before
			content ''
			width 15px
			height 15px
			border #adb5bd solid 1px
			border-radius 2px
			transition .25s background-color, .25s color
		&:after
			content '\2714'
			height 15px
			width 15px
			line-height 15px
			text-align center
			opacity 0
			color #fff
			transition .25s opacity
		&:before, &:after
			left 0
			top 0
			
.b-radiobox
	&__label
		&:before
			content ''
			width 15px
			height 15px
			border #adb5bd solid 1px
			border-radius 50%
			transition .25s background-color, .25s color
		&:after
			content ''
			height 5px
			width 5px
			border-radius 50%
			text-align center
			opacity 0
			background-color #fff
			transition .25s opacity
		&:before
			left 0
			top 1px
		&:after
			top 6px
			left 5px
			
