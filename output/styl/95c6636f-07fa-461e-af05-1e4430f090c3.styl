#cover
  align: 'left' 'top' 'fixed'
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  size: 100vw 100vh

  &::before
    align: 'left' 'top'
    background-color: get-color('black', .4)
    content: ''
    size: 100%

main.post
  padding: 0
  size: 100%

  section.cover,
  section.no-cover
    flex-block('center', 'bottom')
    size: 100% auto

    div.title
      size: 100% auto

      h1
        color: get-color('true-white')
        max-size: 100% none
        word-wrap: break-word

        +screen('>=desktop')
          max-size: 80% none

      span.date
        color: get-color('true-white')

  section.no-cover
    padding(100px screen-padding-right() 0 screen-padding-left())

    +screen('>=phablet')
      padding(null screen-padding-right('phablet') null screen-padding-left('phablet'))

    +screen('>=tablet')
      padding(null screen-padding-right('tablet') null screen-padding-left('tablet'))

  section.cover
    padding(40px screen-padding-right() 40px screen-padding-left())
    size: 100%

    +screen('>=phablet')
      padding(null screen-padding-right('phablet') null screen-padding-left('phablet'))

    +screen('>=tablet')
      padding(null screen-padding-right('tablet') null screen-padding-left('tablet'))

    +screen('h>=phablet')
      size: 100% 80%

  section.body
    padding(screen-padding-top() screen-padding-right() screen-padding-bottom() screen-padding-left())
    background: get-color('background')
    z-index: get-z('content')

    +screen('>=phablet')
      padding(screen-padding-top('phablet') screen-padding-right('phablet') screen-padding-bottom('phablet') screen-padding-left('phablet'))

    +screen('>=tablet')
      padding(screen-padding-top('tablet') screen-padding-right('tablet') screen-padding-bottom('tablet') screen-padding-left('tablet'))

    div.content
      size(100% auto)

  section.comments
    padding(screen-padding-top() screen-padding-right() screen-padding-bottom() screen-padding-left())
    background: get-color('background')
    text-align: center
    z-index: get-z('content')

    +screen('>=phablet')
      padding(screen-padding-top('phablet') screen-padding-right('phablet') screen-padding-bottom('phablet') screen-padding-left('phablet'))

    +screen('>=tablet')
      padding(screen-padding-top('tablet') screen-padding-right('tablet') screen-padding-bottom('tablet') screen-padding-left('tablet'))
