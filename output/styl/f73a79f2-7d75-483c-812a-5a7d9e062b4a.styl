.product-slider
  width 100%
  margin 0 auto
  box-sizing border-box
  padding 10px 0px
  margin-bottom 15px
  position relative
  &__header
    text-transform uppercase
    color c_orange
    font-size 20px
    margin-bottom 15px
    font-family r_med
  &__wrapper
    width 100%
    margin 0 auto
  &__list
    position relative
    width 1020px
    margin 0 auto
  &__prev
    position absolute
    display block
    top 0
    bottom 0
    left -40px
    margin auto 0
    font-size 0
    height 40px
    width 40px
    background-image none
    background-color c_mgray
    border 0
    & .material-icons
      position absolute
      margin auto
      top 0
      bottom 0
      left 0
      right 0
      width 24px
      height 24px
  &__next
    position absolute
    display block
    top 0
    bottom 0
    right -40px
    margin auto 0
    font-size 0
    height 40px
    width 40px
    background-image none
    background-color c_mgray
    border 0
    & .material-icons
      position absolute
      margin auto
      top 0
      bottom 0
      left 0
      right 0
      width 24px
      height 24px
  &__item
    list-style none
    display flex
    flex-direction column
    align-items center
    max-width 180px
    margin 0 10px
  &__link
    display flex
    flex-direction column
    align-items center
    width 100%
    padding 5px 6px
    box-sizing border-box
    text-decoration none
    border 1px solid transparent
    &:hover
      border 1px solid c_mgray
      border-radius 3px
    & img
      max-height 95px
      min-height 80px
      max-width 150px
      width auto
  &__name
    display block
    width 120px
    margin-top 5px
    margin-bottom 5px
    text-transform uppercase
    font-family r_med
    font-size 14px
    line-height 18px
    color #323232
    text-align left
    width 120px
  &__price
    text-align
    display block
    width 120px
    font-size 18px
    color c_orange
    font-family r_bold
.product-form
  margin 40px 0 30px 0
  margin 0
  width 100%
  &__wrapper
    justify-content space-between
    flex-wrap wrap
  &__name
    width 280px
    & label
      display none
  &__mail
    width 422px
    & label
      display none
  &__input
    width 100%
    height 35px
    padding 0 20px
    box-sizing border-box
    margin-bottom 15px
    font-family r_reg
    font-size 16px
    border-radius 2px
    background-color transparent
    border 1px solid c_lgray
  &__sex
    margin 0 5px 20px 5px
    flex-wrap wrap
    width 270px
    &-header
      display inline-block
      margin-right 20px
      font-family r_reg
      font-size 16px
    &-label
      font-family r_reg
      font-size 16px
      margin-right 15px
      position relative
      padding-left 20px
      &::before
        position absolute
        top 0
        left 0
        content ''
        display block
        width 12px
        height 12px
        border-radius 50%
        background-color transparent
        border 1px solid transparent
        box-shadow 0px 0px 0px 1px c_orange
    &-input
      display none
      &:checked+label::after
        position absolute
        top 2px
        left 2px
        content ''
        display block
        width 10px
        height 10px
        border-radius 50%
        background-color c_orange
  &__header
    align-items center
    width 100%
    box-sizing border-box
    padding 15px 20px 25px
    margin-bottom 30px
    border-bottom 1px solid c_lgray
    font-size 28px
  &__description
    width 900px
    font-size 18px
    text-transform uppercase
    & span
      text-transform none
      font-size 14px
  &__textarea
    width 100%
    margin 10px 0 30px
    padding 20px
    box-sizing border-box
    border 0
    height 110px
    background-color transparent
    border 1px solid c_lgray
