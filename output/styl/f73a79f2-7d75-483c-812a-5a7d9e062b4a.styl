        bottom -2px
        left 0
        width 100%
        height 2px
        background-color c_orange
  &__item
    padding-top 15px
  &__product-logo
    width 158px
    padding 0 10px
    box-sizing border-box
  &__product-text-block
    width 565px
    font-size 14px
    line-height 18px
  &__product-text
    margin-bottom 20px
  &__product-list
    margin-bottom 20px
