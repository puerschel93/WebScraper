.product-cart
  width 540px
  margin-bottom 40px
  &__header
    text-transform uppercase
    font-family r_med
    font-size 20px
    letter-spacing 0.7px
    padding 15px 0
    position relative
    &::before
      position absolute
      content ''
      left 0
      top 0
      width 45px
      border-top 3px solid #f95318
  &__brand
    margin-bottom 15px
    font-size 19px
    &-name
      font-size 18px
      text-decoration underline
      color c_orange
      font-family r_med
  & .element__stars
    margin-bottom 10px
    .active
      font-size 20px
      color c_yellow
    .not-active
      font-size 20px
      color c_gray
  & .status-block
    margin-top 5px
    margin-bottom 10px
    font-size 18px
    &__header
      font-family r_reg
      margin-right 7px
      color c_black
    &__info
      font-family r_med
      color c_green
  &__vendorcode
    font-size 18px
    margin-bottom 10px
    &-header
      font-family r_reg
      margin-right 7px
    &-number
      font-family r_med
  &__barcode
    font-size 18px
    margin-bottom 10px
    &-header
      font-family r_reg
      margin-right 7px
    &-number
      font-family r_med
  &__weight
    font-size 20px
    margin-bottom 15px
    &-header
      font-family r_reg
      margin-bottom 10px
    &-type
      font-family r_med
      align-items flex-end
      & .input
        display none
      & .label
        font-size 16px
        color c_mgray
        &::after
          content ''
          display inline-block
          height 14px
          width 1px
          background-color c_mgray
          margin-right 5px
          margin-left 5px
        &:last-child::after
          display none
        &:hover
          color c_orange
      & .input[type='radio']:checked + .label
        font-size 20px
        color c_orange
  &__amount
    margin-bottom 20px
    &-choice
      position relative
      margin-left 25px
    &-header
      font-size 20px
    & .input
      height 30px
      width 75px
      border 1px solid c_mgray
      border-radius 3px
      padding 0 30px 0 15px
      box-sizing border-box
      text-align center
      font-family r_bold
      font-size 18px
    & .arrow
      position absolute
      content ''
      height 28px
      width 30px
      top 1px
      right 1px
      border-radius 0 3px 3px 0
      background-color #fff
      cursor pointer
      &::before
        position absolute
        content ''
        top 12px
        left 11px
        border 5px solid transparent
        border-top 5px solid #191919
  &__price
    &-new
      font-size 32px
      font-family r_med
      color c_orange
      margin-bottom 10px
    &-old
      margin-bottom 3px
      font-size 20px
      font-family r_med
      color c_mgray
      text-decoration line-through
    &-details
      margin-bottom 30px
      &-text
        display block
        font-size 15px
        line-height 20px
  &__favorites
    margin-top 25px
    & .material-icons
      font-size 20px
      margin-right 10px
      color c_orange
    &--text
      color c_gray
      text-decoration underline
    &:hover
      & .product-cart__favorites
        color c_orange
  &__button
    height 55px
    min-width 290px
.tabs
  &--product
    width 722px
