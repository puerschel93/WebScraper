.product
  padding 20px 0 45px
  align-items flex-start
  &__view
    height 562px
    position relative
    align-items flex-end
    width 510px
    padding 15px
    box-sizing border-box
    margin-bottom 40px
    border 1px solid c_lgray
    &__list
      width 100px
    & .lSSlideOuter .lSPager.lSGallery li
      padding 5px
      box-sizing border-box
      text-align center
      display block
      border 1px solid c_lgray
      &:hover
        border 1px solid c_orange
      & img
        max-height 90px
        height 100%
        width auto
        display block
        margin 0 auto
    & .lSSlideOuter .lSPager.lSGallery li.active
