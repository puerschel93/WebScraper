.guided-image-editor {
  &-image-select {
    position: relative;
    width: 100%;
    height: 300px;
    background: $subgroup-background-color;
    border: 2px $subgroup-border-color dashed;
    color: $placeholder-color;
    transition background .1s linear, border-color .1s linear, color .1s linear

    input {
      opacity: 0;
      display: block;
      width: 100%;
      height: 100%;
      cursor: pointer;
    }

    &-placeholder {
      $width = 200px;
      $height = 50px;
      position: absolute;
      text-align: center;
      width: $width;
      height: $height;
      top: 50%;
      left: 50%;
      margin-top: -($height / 2);
      margin-left: -($width / 2);
      font-size: 1.4rem;
      line-height: 1.7rem;
    }

    &.file-hover {
      $darken-by = 5%;
      background: darken($subgroup-background-color, $darken-by);
      border-color: $brand-color;
      color: darken($placeholder-color, $darken-by);

    }

    &.preview {
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      color: transparent;
      border-color: transparent;
    }

  }

  .nav-tabs {
    disable-text-select();
  }

}