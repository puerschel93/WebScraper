#auskunft
    padding-top: 30px
    padding-bottom: 100px
    text-align: left

    h1
        word-break: break-all
        text-align: center

.bundesland
    transition: all 0.5s
    opacity 0.8
    cursor: pointer

.bundesland:hover
    opacity 1 

.selected
    opacity 1 
    stroke: cd-flash
    stroke-width: 0.5px




#navigation
    margin-top 100px
    margin-bottom 40px
    font-weight: bold
    text-transform: uppercase
    h2
        font-size: 12pt
        border-bottom 2px solid cd-foreground
        padding-bottom 7px
        margin-bottom 7px
    a
        font-size: 11pt
        line-height: 150%
        cursor: pointer
        transition color 0.5s

    .selected 
        color #ccc

#navigation-block
    display grid
    grid-template-columns: 1fr 1fr 1fr 

    a:nth-child(1) 
        order: 1
    a:nth-child(2)
        order: 4
    a:nth-child(3)
        order: 7
    a:nth-child(4)
        order: 2
    a:nth-child(5)
        order: 5
    a:nth-child(6)
        order: 8
    a:nth-child(7)
        order: 3
    a:nth-child(8)
        order: 6
    a:nth-child(9)
        order: 9

@media screen and (max-width: 1040px)
    #navigation-block
        display grid
        grid-template-columns: 1fr 1fr

        a:nth-child(1) 
            order: 1
        a:nth-child(2)
            order: 3
        a:nth-child(3)
            order: 5
        a:nth-child(4)
            order: 7
        a:nth-child(5)
            order: 9
        a:nth-child(6)
            order: 2
        a:nth-child(7)
            order: 4
        a:nth-child(8)
            order: 6
        a:nth-child(9)
            order: 8

@media screen and (max-width: 750px)
    #navigation-block
        display grid
        grid-template-columns: 1fr

        a:nth-child(1) 
            order: 1
        a:nth-child(2)
            order: 2
        a:nth-child(3)
            order: 3
        a:nth-child(4)
            order: 4
        a:nth-child(5)
            order: 5
        a:nth-child(6)
            order: 6
        a:nth-child(7)
            order: 7
        a:nth-child(8)
            order: 8
        a:nth-child(9)
            order: 9
