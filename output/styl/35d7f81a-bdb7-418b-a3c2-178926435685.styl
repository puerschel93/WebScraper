.post-content:not(.project-post)
    width: calc(100% - 250px)
    display: inline-block
    vertical-align: top

    @media screen and (max-width: 1025px)
        width: 100%

.single-post
    background white
    float left
    border-radius primaryBorderRadius
    box-shadow primaryBoxShadow
    height 100%
    position relative
    padding 75px 100px
    width 100%
    margin-bottom 30px

    @media screen and (max-width: 767px)
        padding 25px 20px
        margin-left -20px
        margin-right -20px
        width: calc(100% + 40px)
        border-radius 0

.single-post__content
    margin-bottom 75px
    color lighterTextColor

    p
        margin 10px 0
        line-height 2

    a
        color primaryHeading
        font-weight bold

    &.single-post__content--project
        margin-bottom 0

.single-post__demo
    border-radius primaryBorderRadius
    background-image linear-gradient( 90deg, rgb(26,188,156) 0%, rgb(36,220,184) 100%)
    width 200px
    color white
    text-align center
    padding 10px 20px
    display block
    margin 0 auto 40px

.single-post__title,
.single-post__title a,
.single-page__header
    font-family headingFont
    rem(42px)
    color primaryHeading

    @media screen and (max-width: 767px)
        rem(38px)

.single-post__meta
    margin-bottom 35px

.single-post__reading-time
    margin-right 25px

    @media screen and (max-width: 540px)
        display block
        margin-top 10px

.single-post__time,
.single-post__reading-time,
.single-post__comments
    color textColor

.single-post__time
    font-family fjallaFont
    rem(16px)
    margin-right 45px
    display inline-block
    vertical-align middle

.single-post__reading-time,
.single-post__comments
    rem(12px)
    font-family bodyFont

.single-post__content blockquote
    background: almostWhite
    padding: 30px 100px;
    width: calc(100% + 200px)
    margin-left: -100px
    margin-top: 30px
    margin-bottom: 30px

    p
        font-style: normal
        rem(26px)

    @media screen and (max-width: 767px)
        width: calc(100% + 40px)
        margin-left: -20px
        padding: 20px 20px

        p
            rem(18px)

.share-bts
    float: left
    position: absolute
    margin-left: -70px
    margin-top: 50px

    &.fixed-element
        position: fixed
        top: 30px
        margin-top: 0

    @media screen and (max-width: 767px)
        display none

.share-bts__icon
    background white
    display flex
    align-items center
    justify-content center
    box-shadow primaryBoxShadow
    margin-bottom 9px
    width 38px
    height 38px
    opacity 0.2
    transition opacity 0.3s
    border-radius 50%

    &:hover
        opacity 1

.share-bts__mobile
    display none

    .share-bts__icon
        margin-right 30px
        display: flex
        align-items: center
        justify-content: center
        opacity 1
        box-shadow none

    .share-bts__icon--fb img
        width 22px

    .share-bts__icon--tw img
        width 100%

    @media screen and (max-width: 767px)
        display: flex
        align-items: center
        justify-content: center

.share-bts__icon--tw
    img
        width 22px

.share-bts__icon--fb
    img
        width 12px
