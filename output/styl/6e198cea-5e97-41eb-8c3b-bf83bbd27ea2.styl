.s_NoPage body
  overflow: auto; // otherwise no y scrollbars

.s_NoPage .container
  width: 100%;  // otherwise narrower, causing the topic list preview to float drop
  max-width: 1150px;
  margin: 0 auto;
  padding: 0 10px 0 20px;


#dw-non-existing-page
  h1
    margin-bottom: 35px;

  .dw-a-login,
  .s_NP_EmailAgainB
    margin: 0 5px 0 0;
    padding: 8px 15px;
    min-width: 90px;

  .do-what-options
    margin: 20px 0 35px;

    .btn
      margin-right: 10px;

  .input-group
    width: 360px;

.s_NP_TopicListQ
  margin-top: 31px;
  display: flex;
  // Never flex-wrap to two lines.
  // (Because: then, on mobile phones (where the wrap would happen),
  // UX testing shows that people don't scroll down, so they won't see the preview,
  // and won't understand what the radio button choices are for. Better show tiny small
  // images, and then maybe they can rotate their phone into landscape, if they want
  // to see better? Or make the images stupid-lightbox enlargeable.
  // Plus, they can scroll horizontally and look at the image, it's not that small.)
  flex-direction: row;

.s_NoPage .radio
  margin-bottom: 7px;

.s_NP_CreateForumB
  margin: 1em 0 2em;
  padding: 1.2ex 2.2ex;
  font-weight: bold;

.s_NP_TopicsPreview
  max-width: 700px;
  min-height: 700px; // avoids changing page height when changing preview image
  margin-left: 30px;
  img
    box-shadow: hsl(0, 0%, 53%) 5px 5px 32px;

#t_OwnerSignupB
  font-weight: bold;


