.gifts-container
.spinner-container
    position  fixed
    left 0
    top 0
    width 100%
    height 100%
    transform translateY(100%)
    transition transform 0.25s ease-out 0s
    background gradient
    &.show-entered
        transform translateY(0%)
.spinner-container
    .spinner-control
        width 277px
        height 277px
        &:before
            position absolute
            left 15px
            right 15px
            background-image radial-gradient(50% 50%, #265E87 0%, #174D77 100%)
            top 15px
            bottom 15px
            content ''
            border-radius 100%
            display block
            z-index 1
        img
            width 100%
            height auto
            display block
        .spinner-outer
            position absolute
            left 0
            top 0
            z-index 4
            pointer-events none
            width 100%
            height 100%
            .spinner-light
                animation spin infinite 1s linear
                position absolute
                left 0
                top 0
                transition opacity 0.5s ease 0s
                &.double
                &.full
                    opacity 0
        .spinner-action
            width 30%
            height 30%
            display inline-block
            vertical-align middle
            padding 0
            border 0
            background-image radial-gradient(farthest-corner at 50% 30%, #37AFDE 0%, #1283BC 100%)
            border-radius 120px
            z-index 3
            transition all 0.25s ease 0s
            position absolute
            transform translate(-50%,-50%)
            top 50%
            left 50%
            cursor pointer
            outline-color transparent
            outline-style none
            .spinner-action-label
                margin 0 auto
                width 50%
                height auto
                animation breathe infinite 2s ease-out
                position relative
                display inline-block
                vertical-align middle
            &:active
                background-image radial-gradient(50% 50%, #19577B 0%, #0F4468 100%)
                .spinner-action-label
                    animation none
                    transform scale(0.9)
        .spinner-body
            padding 11%
            transition all 0.5s ease-in-out 0.25s
            opacity 0
            transform rotate(-15deg)
            position relative
            z-index 2
            .spinner-image
                transform rotate(0deg)
        .spinner-arrow
            width 22px
            position absolute
            left 50%
            margin-left -11px
            top 5px
            z-index 3
        &.show-entered
            .spinner-body
                transform rotate(0deg)
                opacity 1
        &.spinning
            .spinner-outer
                .spinner-light
                    &.single
                        opacity 0
                    &.double
                        opacity 1
                        animation-duration 1s
            .spinner-arrow
                animation wiggle infinite 5s ease-in
                animation-iteration-count 1
            .spinner-action
                background-image radial-gradient(50% 50%, #2375AE 0%, #1766A1 100%)
                .spinner-action-label
                    animation none
                    transform scale(1.0)
        &.has-results
            .spinner-outer
                .spinner-light
                    &.single
                        opacity 0
                    &.full
                        opacity 1
                        animation none
            .spinner-action
                .spinner-action-label
                    animation none
    .results-container
        z-index 2
        font-size 60px
        position  absolute
        left 0
        top 0
        width 100%
        height 100%
        background rgba(0,0,0,0.75)
        transform translateY(100%)
        transition transform 0.25s ease-in 0s
        &.show-entered
            transform translateY(0%)
        .results
            font-weight bold
            color #fff
.gifts-container
    padding 30px 50px
    overflow-y scroll
    &:before
        transition opacity 1s ease-in 3s
        content "If you see this, try --disable-web-security for your browser"
        opacity 0
        font-size 12px
        position absolute
        left 50%
        top 50%
        transform translate(-50%,-50%)
        color #fff
        margin-top 30px
    &.loading
        &:after
            content 'Loading...'
            font-size 20px
            position absolute
            left 50%
            top 50%
            transform translate(-50%,-50%)
            color #fff
        &:before
            opacity 1
