red = #DD4A45
gradient = linear-gradient(to bottom, #4986af 0%,#6bc6e2 100%)

body
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight 300
* {
    box-sizing border-box
}

.Spinner-img
    transform rotate(0deg)

@keyframes spin {
    from {
        transform: rotate(0deg)
    }
    to {
        transform: rotate(360deg)
    }
}

@keyframes breathe {
    0% {
        transform: scale(1.0)
    }
    50% {
        transform: scale(1.2)
    }
    100% {
        transform: scale(1.0)
    }
}

@keyframes wiggle {
    0% {
        transform: rotate(0deg)
    }
    15% {
        transform: rotate(-70deg)
    }
    20% {
        transform: rotate(-20deg)
    }
    35% {
        transform: rotate(-50deg)
    }
    40% {
        transform: rotate(-30deg)
    }
    55% {
        transform: rotate(-50deg)
    }
    60% {
        transform: rotate(-30deg)
    }
    70% {
        transform: rotate(-50deg)
    }
    75% {
        transform: rotate(-30deg)
    }
    85% {
        transform: rotate(-40deg)
    }
    95% {
        transform: rotate(20deg)
    }
    97% {
        transform: rotate(-30deg)
    }
    98% {
        transform: rotate(15deg)
    }
    99% {
        transform: rotate(-15deg)
    }
    100% {
        transform: rotate(0deg)
    }
}


.centered
    position absolute
    transform translate(-50%,-50%)
    top 50%
    left 50%
.landing-container
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background gradient
    .buttons
        .spin-and-win
        .list-gifts
            display block
