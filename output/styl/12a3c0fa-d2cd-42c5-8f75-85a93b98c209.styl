.at-col
    display: flex
    justify-content: center
    align-items: center

.patient-case
    .at-pagination
        padding: 20px 50px
    min-height: 100vh
    background: #f4f4f4
    font-size: 30px
    .at-row--wrap
        padding: 0 20px
        background: #fff
        box-sizing: border-box
        .at-input__title
            width: auto
            min-width: max-content
        .at-input__input
            border: 1px solid #dcdfe6
            padding-left: 10px
            border-radius: 8px
    .row-wrap
        padding: 30px 0
    .list
        display: flex
        flex-wrap: wrap
        margin: 20px 20px 0
        padding: 20px
        box-sizing: border-box
        border-radius: 10px
        border-top: 2px solid #6190E8
        background: #fff
        .item
            display: flex;
            align-items: center;
            width: 50%
            padding: 6px
            box-sizing: border-box
            overflow: hidden
            text-overflow: ellipsis
            white-space nowrap