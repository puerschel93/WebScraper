/*--------------------------------------------------------------
| Transition
--------------------------------------------------------------*/
.page-enter-active, .page-leave-active
  transition opacity 0.25s

.page-enter, .page-leave-active
  opacity 0

.slide-left-enter,
.slide-right-leave-active
  transition all 0.25s
  opacity 0
  transform translate(50%, 0)

.slide-left-leave-active,
.slide-right-enter
  transition all 0.25s
  opacity 0
  transform translate(-50%, 0)

.slide-up-enter,
.slide-down-leave-active
  transition all 0.25s
  opacity 0
  transform translate(0, 50%)

.slide-up-leave-active,
.slide-down-enter
  transition all 0.25s
  opacity 0
  transform translate(0, -50%)

.card-list-enter-active, .card-list-leave-active, .card-list-move
  transition all 0.5s

.card-list-enter, .card-list-leave-to
  opacity 0
  transform translateY(40px)

/*--------------------------------------------------------------
| Animation
--------------------------------------------------------------*/
.frame
  overflow hidden

  .frame-inner
    height 100%

/* 線(ボーダー)のスタイル 共通 */
.frame:before,
.frame:after,
.frame .frame-inner:before,
.frame .frame-inner:after
  z-index 10
  content ''
  position absolute
  background deepskyblue

// 下
.frame:before
  bottom 0
  left -100%
  width 100%
  height 2px

// 右
.frame:after
  bottom -100%
  right 0
  width 2px
  height 100%

// 上
.frame .frame-inner:before
  top 0
  right -100%
  width 100%
  height 2px

// 左
.frame .frame-inner:after
  top -100%
  left 0
  width 2px
  height 100%

// アニメーション
.frame:hover:before
  animation frameLeft 1.0s ease-in-out 0s infinite

.frame:hover:after
  animation frameBottom 1.0s ease-in-out 0.5s infinite

.frame
  .frame-inner:hover:before
    animation frameRight 1.0s ease-in-out 0s infinite

  .frame-inner:hover:after
    animation frameTop 1.0s ease-in-out 0.5s infinite

// アニメーション設定
@keyframes frameTop
  0% 
    top 100%
  100%
    top -100%

@keyframes frameBottom
  0%
    bottom 100%
  100%
    bottom -100%

@keyframes frameRight
  0%
    right 100%
  100%
    right -100%

@keyframes frameLeft
  0%
    left 100%
  100%
    left -100%
