//自己定义的

@media (min-width: 1441px){
  .container .main-inner {
    width: 70%;
  }
  .header {
    position: relative;
    margin: 0 auto;
    width: 70%;
  }
}

@media (max-width: 1440px){
  .container .main-inner {
    width: 75%;
  }
  .header {
    position: relative;
    margin: 0 auto;
    width: 75%;
  }
}

// 移动端样式
@media (max-width: 1000px) {
    .container {
        background-color: rgba(0, 0, 0, 0);
    }
    .container .main-inner {
        width: auto;
    } 
    
    .header {
        position: relative;
        margin: 0 auto;
        width: auto;
    }
    .sidebar {
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
    }
    .feed-link {
        display: none !important;
    }
}
@media (max-width: 767px) {

    .weixin-box {
        bottom: 60px;
        left: 30px;
    }
    .main {
        padding-bottom: 120px;
    }
    .post-toc ol a {
        color: #000;
    }
    .sidebar-nav li {
        color: #000;
    }
    body {
        color: #000;
    }
    .posts-expand {
        margin: 0px;
    }
    .post-block {
        padding: 20px;
    }
    .posts-expand .post-title {
        font-size: 22px;
        color: #000;
    }
    .posts-expand .post-title-link {
        color: #000;
    }
    .posts-expand .post-meta {
        font-size: 10px;
	margin: 3px 0 30px 0;
    }
    .post {
        margin-bottom: 30px !important;
	margin-top: 0px;
        padding: 20px 15px 15px 15px !important;
    }
    .post-body {
        color: #000;
    }
    .post-body h2, h3, h4, h5, h6 {
        margin-left: -15px;
        padding-left: 11px;
    }
    .posts-expand .post-tags {
        margin-top: 10px;
    }
    .post-widgets {
        margin-top: 10px;
    }
    .comments {
        margin: 40px 0px 40px 0px !important;
    }
    .footer {
        box-shadow: 0px -5px 10px 0px rgba(0, 0, 0, 0.5);
    }
}
.sidebar-active #sidebar-dimmer {
    opacity: 0;
}
