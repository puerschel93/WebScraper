// app global css in Stylus form
  .imgIndex {
    max-width 300px
  }

  .container {
    padding-left: 2.5rem;
    padding-right: 2.5rem
  }

  .header-image {
    height: 100%
    z-index: -1
  }

  @font-face {
    font-family: caveat;
    src: url(../assets/font/caveat-regular.ttf);
  }

    // declare a class which applies it
.my-font {
    font-family: 'caveat';
  }
// app global css in SCSS form
.bgimg {
  background-repeat: no-repeat;
  background-attachment: fixed;
  top: 0px;
  position: fixed;
  height: 100vh;
  object-fit: cover;
  z-index: -100;
}

@media only screen and (max-width: 800px) {
  .text-h3 {
    font-size: 1.5rem;
    line-height: 1.75rem;
  }
  .text-h6 {
    font-size: 1rem;
    line-height: 1.5rem;
  }
  .container {
    padding: 1rem;
  }
}
