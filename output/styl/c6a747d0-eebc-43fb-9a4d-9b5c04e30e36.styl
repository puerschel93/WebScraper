.play-control-component{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 200;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  .top-box {
    padding-top: 24px;
    display: flex;
    padding-left: 31px;
    padding-right: 26px;
    align-items: flex-start;
    position: relative;
    .top-left-box {
      flex: 1;
      display: flex;
      align-items: flex-start;
      .icon-back {
        width: 44px;
        height: 44px;
        margin-right: 21px;
        img {
          width: 100%;
          height: 100%;
        }
      }
      .text-box {
        .nickname {   
          font-size: 33px;
          font-family: Noto Sans S Chinese;
          font-weight: 500;
          color: #FFFFFF;
          line-height: 31px;
        }
        .hot-info-box {
          display: flex;
          align-items: center;
          margin-top: 11px;
          justify-content: flex-start;
          .icon-hot {
            width: 13px;
            height: 17px;
            margin-right: 8px;
          }
          .hot-num{          
            line-height: 17px;
            font-size: 19px;
            font-family: Noto Sans S Chinese;
            font-weight: 500;
            color: #FFFFFF;
          }
          .room-text {
            line-height: 17px;
            font-size: 19px;
            font-family: Noto Sans S Chinese;
            font-weight: 500;
            color: #FFFFFF;
            margin-left: 12px;
          }
        }
      }
    }
    .top-right-box {
      display: flex;
      align-items: center;
      position: relative;
      .menu-box {
        width: 44px;
        height: 44px;
        margin-right: 21px;
      }
      .share-box{
        width: 44px;
        height: 44px;
      }
      .cutover-menu-box {
        z-index: 10;
        position: absolute;
        bottom: -100px;
        right: 0;
        display: flex;
        width: 150px;
        height: 90px;
        background: rgba(255, 255, 255, 0.25);
        border-radius: 6px;
        flex-direction: column;
        padding: 0 6px;
        .play-mode {
          margin-left: 7px;
          flex: 1;
          display: flex;
          align-items: center;
          font-size: 17px;
          color: $theme-txt-white;
          img {
            margin-right: 6px;
            width: 26px;
            height: 26px;
          }
        }
      }
    }
  }
  .bottom-box {
    display: flex;
    justify-content: space-between;
    padding-bottom: 14px;
    padding-right: 21px;
    padding-left: 18px;
    .play-icon {
      width: 44px;
      height: 44px;
      img {
        width: 100%;
        height: 100%;
      }
    }
    .full-icon {
      width: 44px;
      height: 44px;
      img {
        width: 100%;
        height: 100%;
      }
    }
  }
  .audio-mode {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    height: 239px;
    width: 506px;
    img {
      width: 100%;
      height: 100%;
    }
    .open-screen {
      position: absolute;
      bottom: 50px;
      left: 50%;
      transform: translateX(-50%);
      width: 206px;
      height: 72px;
      background: #151515;
      border: 1px solid #FFFFFF;
      opacity: 0.8;
      border-radius: 35px;
      font-size: 26px;
      font-family: Noto Sans S Chinese;
      line-height: 72px;
      color: #FFFFFF;
      text-align: center;
    }
  }
  .hot-not{
    font-size: 31px;
    font-family: Noto Sans S Chinese;
    font-weight: 500;
    color: $theme-txt-white;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
  }
}


.play-control-component-holder {
    background-image: url('../../assets/images/live/zbbz_bg@2x.png');
    background-size: 100% 100%;
}


