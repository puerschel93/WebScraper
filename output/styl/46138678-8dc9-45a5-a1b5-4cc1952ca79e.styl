			margin 0

#devf-programs
	background rgba(255,255,255,.6)
	padding 2em 0

	h2
		font-weight: 100;
		font-family 'Fredoka One', cursive
		border-left 1px dashed white
		display inline-block
		padding .2em .4em
		// color white
		margin 0

	.devf-programs-see-all a
		text-decoration underline
		// color white
		font-weight 100
		font-size .9em
		padding-left 1em

	.devf-programs-container
		margin-top 1em
		margin-bottom 3em

		.devf-program-box
			border-radius 5px
			width 90%
			margin 0 auto
			max-width 300px
			margin-bottom 2em

			.dev-program-header
				border-radius 10px 10px 0 0
				background white
				padding 1em 0 2em 0

				h3
					text-align center
					font-weight 100

				.devf-program-price
					margin 0
					padding 0
					text-align center
					font-weight bolder
					font-size .8em

					.devf-old-price
						text-decoration line-through
						font-weight 100

						&:before
							content "$ "

					.devf-actual-price
						&:before
							content "$ "

			.header-cinta-negra-web, .header-cinta-negra-mobile
				background #454A4C
				color #efefef
				box-shadow inset 0 3px 0 #474747

				.devf-program-price
					color #efefef

			.header-cinta-roja
				background #FF4C4C
				color white

			.header-cinta-blanca
				background #FFF

			.dev-program-requirements
				background #2E3133
				padding 1em 4em
				border-radius 0 0 10px 10px
				color white
				min-height 210px

				p
					text-align center

				.devf-programs-read-more
					margin 2em 0
					padding 0
					border none

					a
						text-align center
						margin 0
						padding 10px 25px
						border-radius 20px
						border 1px solid white
						text-transform uppercase
						font-size 12px
						font-weight bolder
						color white
						text-decoration underline

