/* Variables */
blue_link = #52B3F9
blue_section = #4F9BD2
green_button = #7dcd40
/* Variables */

/* OOCSS Classes*/
.devf-aply-button
	a
		background blue_link;
		font-weight bolder
		font-size 16px
		padding .7em 3em
		margin .5em 0
		color white
		text-transform uppercase
		letter-spacing 1px
		box-shadow: 0 3px 1px 0 #228BE2
		border-radius 5px

		-webkit-transition .2s
		-moz-transition .2s
		-o-transition .2s
		transition .2s

		&:hover
			box-shadow: 0 5px 1px 0 #578F2C
			text-decoration none
			background #7dcd40
			color white
			padding .9em 3.2em
			cursor pointer

.devf-white-link
	color white
	text-decoration none

.devf-thin-text
	font-size .9em
	font-weight 100

.devf-wide-image
	height 60vh
	background-position center
	background-repeat no-repeat
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	-moz-box-shadow    inset 0 0 10px #000000
	-webkit-box-shadow inset 0 0 10px #000000
	box-shadow         inset 0 0 10px #000000

.devf-stronger
	font-weight bolder
/* OOCSS Classes*/

body
	font-family 'Open Sans', sans-serif
	background #efefef

header
	background none
	border-radius 0
	border none
	position absolute
	top 0
	left 0
	right 0

	.navbar
		background none
		border none
		border-radius 0px
		margin 0
		padding 1em 0

		.devf-menu-bar
			li
				a
					color white
					font-weight bolder

					&:hover
						color blue_link

				#devf-selected-menu
					color blue_link
footer
	height 25vh
	background-color #04081B
	p
		font-size 14px
		color white
	.container
		margin-top 4em
		figure
			img
				margin 3em 0
.about-hero
	background-position center !important
	background-repeat no-repeat !important
	background-size cover !important
	height 80vh !important
	position relative

	.opacity
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		background-color rgba(60, 60, 60, 0.5)

.about
	.row
		margin 2em 0
	.who-what
		h2
			font-weight bold
		p
			font-size 16px
			margin-top 1em
	
.gim
	text-align center  
	font-size 16px
	margin 3em 0 4em
	margin 0 auto
	.text
		margin 3em auto
