$green = #00A0AB
$gray = #C7C7C7
tr()
	transition .3s

body
	font-family: 'Ubuntu', sans-serif;

svg
	&.hidden
		display none
	
	&.icon
		tr()
		width: 24px
		height: 24px

.container
	max-width calc(968px + 32px)
	width 100%
	padding 0 16px
	margin: 0 auto

.similar
	padding: 64px 0
	
	&__title
		font-size: 22px
		font-weight: bold;
		margin-bottom: 32px
	
	&__grid
		display grid
		grid-template-columns repeat(auto-fill, minmax(224px, 1fr))
		gap 24px
		grid-gap 24px
		margin-bottom: 32px
	
	&__more
		text-align: right;
		
		a
			display inline-flex
			align-items center
			font-size: 14px
			font-weight: 500
			color: $green
			text-decoration: none;
	
	&__loader
		text-align center

.card
	border-radius: 8px
	overflow hidden
	box-shadow 0 0 20px rgba(0, 0, 0, .1)
	background: #fff
	
	&_seen
		background: #FFF6A5
	
	&__media
		height: 260px
		position relative
		width: 100%
	
	&__image
		width: 100%
		height: 100%
		z-index 0
		position relative
		
		img
			width: 100%
			height: 100%
			object-fit cover
			display block
	
	&__status
		position absolute
		z-index 1
		top: 12px
		left: 0
		right: 0
		text-align: center
		
		span
			background: rgba(#2C2C2C, .74)
			font-size: 12px
			color: #fff
			border-radius: 8px
			padding: 5px 8px
			display: inline-block
	
	&__actions
		position absolute
		bottom: 34px
		right: 12px
		display flex
		flex-direction column
	
	&__action
		height: 24px
		width: 24px
		cursor: pointer;
		
		&:not(:last-child)
			margin-bottom: 12px
		
		svg.icon
			fill #fff
		
		&:hover
			svg.icon
				fill $green
	
	
	&__body
		padding: 12px
	
	&__top
		display flex
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 8px
	
	&__icons
		display flex
	
	&__icon
		height: 24px
		width: 24px
		cursor: pointer;
		
		&:not(:last-child)
			margin-right: 12px
		
		svg.icon
			fill $gray
		
		&:hover
			svg.icon
				fill $green
	
	&-price
		
		&__old
			font-size: 14px
			color: #5A5A5A
			text-decoration line-through
		
		&__current
			font-size: 22px
			color: #2c2c2c
			font-weight bold
			line-height: 1
	
	&__title
		font-weight: 500
		font-size: 14px
		margin-bottom: 14px
	
	&__bottom
		display flex
		justify-content space-between
		font-size: 12px
		color: #8F8F8F
		white-space nowrap
	
	&__city
		display block
		overflow hidden
		text-overflow ellipsis
		margin-right: 12px

.loader
	display: inline-flex;
	flex-flow: row nowrap;
	align-items: center;
	justify-content: space-between;
	width: 40px;
	span
		border-radius: 2px
		width: 4px;
		height: 16px;
		background-color: $green;
	
	span:nth-of-type(1)
		animation: grow 1s -0.45s ease-in-out infinite;
	
	span:nth-of-type(2)
		animation: grow 1s -0.3s ease-in-out infinite;
	
	span:nth-of-type(3)
		animation: grow 1s -0.15s ease-in-out infinite;
	
	span:nth-of-type(4)
		animation: grow 1s ease-in-out infinite;

@keyframes grow
	0%,
	100%
		transform: scaleY(1);
	50%
		transform: scaleY(2);
	

