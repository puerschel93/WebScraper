// General HTML element styles go in this file. These form the base styles that can be modified in the other .styl files of inside the Vue component files.

*, *:before, *:after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body, div {
  font-family: sans-serif;
  font-size: $base-font-size;
}

// ====================================
// Typography:
// This includes font families, font sizes, line heights and other
// typographical styles for applicable HTML elements (e.g. <h1>, <p>).
// ====================================
@media $s-up {
  h1 { font-size: 2.25rem; }
  h2 { font-size: 1.5rem; }
  h3 { font-size: 1.25rem; }
  h4 { font-size: 1.15rem; }
  h5 { font-size: 1rem; }
  p { line-height: 1.45rem; }
  li { line-height: 1.45rem; }
}

h1 {
  font-family: $cursive-font-stack;
  color: $text;
}

h2, h3, h4, h5 {
  font-family: $sans-font-stack;
  color: $text;
}

h2 {
  padding: 3px 5px;
  background-color: $text;
  color: white;
}

div, p, ul, li, span {
  font-family: $sans-font-stack;
  color: $text;
}

p {
  margin-bottom: 16px;
  line-height: 1.6rem;
}

ul {
  margin-left: 20px;
  margin-bottom: 20px;
}

li {
  line-height: 1.75rem;
}


// ==================================================
// Depth (box shadows) (These variables don't actually work, but I am keeping these here for my reference.)
// ==================================================
$low = "1px 1px 2px $gray100";
$medium = "2px 2px 4px $gray100";
$high = "3px 3px 6px $gray100";


// ==================================================
// Misc Variables & Styles
// ==================================================
$global-radius = 0px;

// Show user-feedback with a spinner `wait` cursor.
.loading {
  cursor: wait;
}

.tip-text {
  &.white {
    border-bottom: 1px dotted $white;
  }
}

.tip-tag {
  width: 200px;
  position: absolute;
  bottom: 27px;
  left: -5px;
  // right: -155px
  padding: 7px;
  border-radius: 7px;
  font-family: sans-serif;
  font-size: 1rem;
  font-weight: normal;
  &.light {
    background-color: $cyan;
    color: $text;
  }
  // Tooltip Arrow
  // https://css-tricks.com/snippets/css/css-triangle/
  // https://www.w3schools.com/css/css_tooltip.asp
  &:after {
    content: " ";
    position: absolute;
    // Place the top of the tooltip's arrow at the bottom of the tooltip (i.e. go down by 100% of the tooltip's height and place the top of the arrow at that position).
    top: 100%;
    // Place the left edge of the tooltip's arrow "20px" to the right of its normal position. This will move the arrow toward the right edge of the tooltip.
    left: 20px;
    // "left: 50%" would place the arrow in the center of the tooltip.
    // left: 50%;
    margin-left: -10px; // margin-left should be the same as the border width
    border-top: 10px solid $cyan;
    // border-top: 7px solid $white;
    border-right: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-left: 10px solid transparent;
  }
}

// ==================================================
// Styled HTML Elements
// ==================================================
a:link, a:visited {
  color: $text;
  text-decoration: none;
  border-bottom: 1px dotted $text;
}

a:hover {
  border-bottom: none;
}

button {
  outline: none;
  border: none;
  cursor: pointer;
  background-color: transparent;
  &:hover {
    background-color: transparent;
  }
  &:focus, &:active {
    // CSS rule goes here, if needed
  }
  &.btn-primary {
    padding: 12px;
    box-shadow: 3px 3px 6px $gray130;
    background-color: $dark-blue;
    color: $white;
    &:hover {
      box-shadow: none;
      background-color: darken($dark-blue, 30%);
    }
  }
  &.btn-secondary {
    padding: 12px;
    box-shadow: 3px 3px 6px $gray130;
    background-color: $dark-red;
    color: $white;
    &:hover {
      box-shadow: none;
      background-color: darken($dark-red, 20%);
    }
  }
  &:disabled {
    padding: 12px;
    box-shadow: none;
    background-color: $cyan80;
    color: $cyan30;
    font-style: italic;
    &:hover {
      background-color: $cyan80;
    }
  }
}

.sort-btn, .delete-btn {
  padding: 0 5px;
}
.sort-btn {
  margin-left: -5px;
}
.delete-btn {
  margin-right: -5px;
}

.icon {
  font-size: 1.5rem;
}

code {
  font-family: $mono-font-stack;
  background: lighten(gray, 50%);
}

pre {
  font-family: $mono-font-stack;
  padding: 15px 0;
  background: lighten(gray, 75%);
}


