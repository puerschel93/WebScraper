// Used font weights
$weight-light = 100
$weight-regular = 400
$weight-bold = 700

// Generic text styles
text()
  font-family $font-primary
  font-weight $weight-regular

// Generic title styles
title()
  font-family $font-primary
  font-weight $weight-bold

// Common texts
.text
  &--alpha
    text()
    font-weight $weight-light
    font-size 16px
    line-height 35px
    color #8D8D8D

  &--beta
    text()
    font-weight $weight-light
    font-size 16px
    line-height 24px

// Common titles
.title
  &--beta
    title()
    text-transform uppercase
    font-size 32px
    line-height 39px

    .title__background
      font-size 64px
      line-height 78px

  &--gama
    color #000000
    font-size 20px
    line-height 29px
    font-family $font-secondary
    font-weight $weight-bold

// Specific typography styles
.button
  text()
  font-size 14px
  text-decoration none
  cursor pointer

.header
  &__pretitle
    title()
    font-size 18px
  &__title
    title()
    font-size 48px
    line-height 58px
