nav ul li a
  color #ffa500

#mobile-demo li a
  color #ffa500

nav img
  margin-top 3px

#last-nav-item
  margin-right 10px

.fa-bars
  color #ffa500

#logo
  height 70px
  width 250px
  margin-left 15px

.dropdown-content li a
  color #ffa500

.parallax-container
  height 250px

#fact-list
  list-style-type: disc
  list-style-position: inside
  margin-left 3%

  li
    list-style-type: disc
    list-style-position: inside

section
  color #616161
  margin-top 3em
  margin-bottom 3em
  font-size 18px

  li
    margin 2px 0

.gallery-container
  width 85%
  margin-left auto
  margin-right auto
  margin-top -2em

.gallery-item-container
  display inline-block
  text-align center
  vertical-align middle
  font-size 10px
  padding 0 0

  h5
    margin-top 2em
    margin-left 25px
    color #616161

  a
    color #616161
    text-decoration none

.gallery-item
  height 250px
  width 250px
  margin-top 1em

@media (min-width: 500px)
  .gallery-item
    margin-left 3em

@media (max-width: 350px)
  .gallery-item
    margin-left 0.8em

@media (max-width: 499px)
  #logo
    height 60px

  .gallery-item
    margin-left: 4em
