/* Medium Devices, Desktops */

.work
	&-back
		position absolute
		right calc(100% - 9px)
		top 14px
		display flex
		align-items center
		transform rotate(-90deg)
		color rgba($black2, .5)
		&:hover
			color rgba($black2, 1)
		span 
			font-size 20px
			line-height 40px
			&[class^='icon-']
				margin-left 15px
				font-size 15px
				transform rotate(-90deg)
@media (max-width: 1350px)
	.work-back
		position static
		margin-bottom 20px
		transform none
		display inline-flex
		flex-direction row-reverse
	.work-back span[class^='icon-']
		transform: rotate(-180deg)
		margin-left 0
		margin-right 15px

@media (min-width : 992px) && (max-height : 700px)
	h2
		font-size 65px
		line-height 65px
	h3
		font-size 40px
		line-height 55px
	h4
		font-size 25px
		line-height 35px
@media (max-width : 991px)
	h2
		font-size 35px
		line-height 45px
	h3
		font-size 30px
		line-height 40px
	h4
		font-size 25px
		line-height 35px
	.btn
		height 60px
		&_show
			height 40px

	.form .form-control
		font-size 20px
		line-height 35px
	
