//main styles
body
	&.show
		.popup
			&-bg
				opacity 1
				visibility visible
				pointer-events auto
.main-wrapper
	padding 0 0 0 0
	min-width $min-width
	width 100%
	position relative
	overflow hidden
	min-height 100%
	display flex
	flex-direction column
	justify-content flex-start	

.wrapper
	min-width $min-width
	max-width $max-width
	padding 0 40px 0 40px
	margin 0 auto
	position relative

/* titles */
p
	font($base-font-size, $base-line-height, $text-color, $custom-font-family, 400)
	padding 0 0 15px 0
	&:last-of-type
		padding-bottom 0

h1
	font($font-size-h1, $line-height-h1, $title-color, $custom-font-family, 700)
	padding 0

h2
	font($font-size-h2, $line-height-h2, $title-color, $custom-font-family, 700)
	padding 0

h3
	font($font-size-h3, $line-height-h3, $title-color, $custom-font-family, 700)
	padding 0

h4
	font($font-size-h4, $line-height-h4, $title-color, $custom-font-family, 700)
	padding 0

/* styles */
.main
	min-width $min-width
	width 100%
	order 2
	flex-grow 1

.btn
	display flex
	align-items center
	justify-content center
	padding 0 10px
	height 86px
	font-size 20px
	line-height 40px
	font-weight 500
	color $black2
	text-align center
	transition $transition
	&_button
		width 100%
		outline none
		border none
		&[disabled]
			cursor default
			color $grey
	&_accent
		background-color $accent
		&:hover
			background-color lighten($accent, 10%)
	&_white
		background-color $white
	&_show
		display inline-flex
		width 100%
		max-width 260px
		height 40px
		border 2px solid $black
		font-size 15px
		line-height 25px
		text-transform uppercase
		span
			position relative
			padding-right 17px
			&:after
				content ''
				position absolute
				right 0
				top 50%
				transform translateY(-50%) rotate(45deg)
				width 7px
				height 7px
				border 2px solid $black
				border-top none
				border-left none

.cookies
	position fixed
	width 260px
	z-index 9999
	top 0
	left 50%
	padding 70px 30px 30px 35px
	color $white
	font-weight 500
	background $black url('../img/main/cookies-bg.svg') center right no-repeat
	will-change transform, box-shadow
	&__title
		margin-bottom 10px
		font-size 25px
		line-height 35px
		font-weight 700
	&__text
		margin-bottom 30px
		a
			color $white
			text-decoration underline
			&:hover
				text-decoration none
	&__btn
		color $accent
		font-size 20px
		line-height 40px
		text-transform uppercase

.section
	background-color $white

.title
	span
		&.yellow
			background-color $accent
		&.red
			display inline-block
			margin 8px 0
			color $white
			background-color $red

.ill
	position absolute
	&-el
		position absolute
		width 100%
		will-change transform, opacity
	&-mobile
		display none
	


/* Customize the label (the checkbox-wrap) */
.checkbox-wrap 
	display: block
	position: relative
	padding: 8px 0 8px 60px
	cursor: pointer
	user-select: none
	color $black2 

	/* Hide the browser's default radio button */
.checkbox-wrap input 
	position: absolute
	opacity: 0
	cursor: pointer
	height: 0
	width: 0


	/* Create a custom radio button */
.checkmark 
	position: absolute
	top: 50%
	transform translateY(-50%)
	left: 0
	height: 40px
	width: 40px
	border 2px solid $black2
	&:before
		left: 9px
		top: 5px
		width 51px
		line-height 38px
	&:after
		content ''
		position absolute
		width: 51px
		height: 38px
		left 50%
		top 50%
		background url(../img/callBack/banan-check.svg) center no-repeat
		background-size contain
		transform translate(calc(-50% + 2px), calc(-50% - 10px)) rotate(-45deg) scale(0)
		opacity 0
		transition $transition

/* Show the indicator (dot/circle) when checked */
.checkbox-wrap input:checked ~ .checkmark:after
	transform translate(calc(-50% + 2px), calc(-50% - 10px)) rotate(-45deg) scale(1)
	opacity 1

.form
	.form-control
		display block
		border none
		border-bottom 2px solid $black2
		padding 0
		font-size 45px
		line-height 60px
		font-weight 700
		width 100%
		background-color transparent
	textarea
		min-height 60px
		max-height 200px
		overflow auto
		outline none
		resize none
	.box-field__input
		&.error
			.form-control
				border-color $red
	&_call
		.box-field
			display flex
			align-items baseline
			margin-bottom 24px
			&:last-child
				margin-bottom 0
			&__label
				white-space nowrap
				padding-right 40px
				font-size 45px
				line-height 60px
				font-weight 700
			&__input
				width 100%
		.checkbox-wrap
			a
				color $accent
				&:hover
					color $text-color
					text-decoration underline
	&_start
		.box-field
			margin-bottom 35px
			&:last-child
				margin-bottom 0
			&__label
				font-size 30px
				line-height 45px
				color $black
				font-weight 700
		.form-control
			font-size 30px
			line-height 45px
			padding 0 0 10px 0
			color transparent
			-webkit-text-stroke-width 1px
			-webkit-text-stroke-color rgba($title-color, .4)
			&::placeholder
				@supports(-webkit-text-stroke: 1px black)
					color transparent
					-webkit-text-stroke-width 1px
					-webkit-text-stroke-color rgba($title-color, .4)
		.checkmark:after
			background url("../img/main/banana-check.svg") center no-repeat
			background-size contain
		.btn_button
			text-transform uppercase
		.checkbox-wrap
			a
				color $white
				&:hover
					color $text-color
					text-decoration underline


.popup
	position fixed
	z-index 99999
	right 0
	top 0
	bottom 0
	width 100%
	max-width 840px
	background-color $accent
	overflow auto
	&_start
		padding 145px 140px 73px
	&_thanks
		padding 390px 140px 73px
	&-bg
		position fixed
		z-index 9999
		left 0
		top 0
		right 0
		bottom 0
		background-color rgba($black, .75)
		opacity 0
		visibility hidden
		pointer-events none
		transition $transition
	&-close
		position absolute
		z-index 2
		top 0
		right 140px
		width 160px
		height 116px
		display flex
		align-items center
		justify-content center
		background-color $black
		&:hover
			span
				transform rotate(135deg) scale(1.3)
		span
			transform rotate(45deg)
			font-size 19px
			will-change transform
			transition $transition
	&-cont
		position relative
	&-pic
		position absolute
		width 100%
		z-index 1
		&_1
			top -165px
			left 25%
			max-width 80px
		&_2
			top -115px
			left -9%
			max-width 125px
		&_3
			bottom -50px
			left 96%
			max-width 125px
		&_4
			bottom -75px
			left 30%
			max-width 80px
.thanks
	&-pic
		position absolute
		top -370px
		width 640px
		left 50%
		transform translateX(-50%)
		&-decor 
			position absolute
			&_top, &_bottom
				width 100%
				height 120px
				left 0
			&_top
				top 0
				background: linear-gradient(0deg, rgba(246, 207, 0, 0.0001) 0%, #F6CF00 100%)
			&_bottom
				bottom 0
				background: linear-gradient(180deg, rgba(246, 207, 0, 0.0001) 0%, #F6CF00 100%)
			&_left, &_right 
				height 100%
				width 180px
				top 0
			&_left
				left 0
				background linear-gradient(270deg, rgba(246, 207, 0, 0.0001) 0%, #F6CF00 100%)
			&_right
				right 0
				background linear-gradient(90deg, rgba(246, 207, 0, 0.0001) 0%, #F6CF00 100%)
			
	&-inner
		max-width 390px
		margin 0 auto 70px
		text-align center
		h4
			font-weight 400
			margin-bottom 20px
	&-btn
		.btn
			text-transform uppercase

.ghost
	@supports(-webkit-text-stroke: 1px black)
		color transparent
		-webkit-text-stroke-width 1px
		-webkit-text-stroke-color rgba($title-color, 1)
