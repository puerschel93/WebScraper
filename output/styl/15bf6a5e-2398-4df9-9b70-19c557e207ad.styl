@media (max-width: 767px), (max-height : 599px)
	.main
		overflow hidden
		display flex
		flex-direction column
	body, html
		overflow auto
	.pp-scrollable
		overflow hidden
	.section
		position relative
		background-color transparent
	.ill-mobile
		display block
	.wrapper
		padding 0 30px
	.form .form-control
		padding 4px 0
	.popup-close
		right 0
		width 95px
		height 65px
	.thanks-inner h4
		font-size 20px
		line-height 35px	
		margin-bottom 10px
	.thanks-inner
		margin-bottom 40px
	.cookies
		top auto
		bottom 0

/* Small Devices, Tablets */
@media (max-width : 580px)
	.popup-decor
		display none
	.popup_start
		padding 65px 30px
	.popup_thanks
		padding 275px 30px 30px
	.thanks-btn .btn, .form_start .btn_button
		max-width: 260px
		margin 0 auto
	.form_start .box-field__label
		font-size 20px
		line-height 35px
	.form_start .box-field
		margin-bottom 20px
	.thanks-pic
		width 320px
		top -210px
	.thanks-pic-decor_top, .thanks-pic-decor_bottom
		height 60px
	.thanks-pic-decor_left, .thanks-pic-decor_right
		width 60px
