//
// Color
//
// basic
$color-primary = hsl(198.99, 90.87%, 57.06%)
// #2eb6f5
$color-secondary = hsl(44.9, 91.08%, 69.22%)
// #F8D469
$color-positive = hsl(149.82, 76.74%, 42.16%)
// #19be6b
$color-negative = hsl(12.05, 85.88%, 50%)
// #ed3e12
// gray
$gray-darkest = hsl(0, 0%, 11%)
// #1c1c1c
$gray-darker = hsl(0, 0%, 13.33%)
// #222222
$gray-dark = hsl(0, 0%, 33.33%)
// #555555
$gray-base = hsl(0, 0%, 46.67%)
// #777777
$gray-light = hsl(0, 0%, 82.75%)
// #d3d3d3
$gray-lighter = hsl(0, 0%, 92.94%)
// #ededed
$gray-lightest = hsl(0, 0%, 96.08%)
// #f5f5f5
//
// Transition
//
$transition-duration = 200ms
$transition-mode = cubic-bezier(0.25, 0.8, 0.25, 1)
//
// Texting
//

$font-family-jp = 'NotoSansCJKjp-Medium'
$font-family-description-jp = 'NotoSansCJKjp-Regular'
$font-family-light-jp = 'NotoSansCJKjp-Light'
$font-family-Ultra-jp = 'NotoSansCJKjp-Bold'

$font-family = 'Source Sans Pro', 'Noto Sans TC', 'Montserrat', 'Helvetica', 'Arial', 'sans-serif'
$font-family-description = 'NotoSansCJKjp-Regular', 'Montserrat', 'Noto Sans TC', 'Helvetica', 'Arial', 'sans-serif'
$font-family-light = 'Gotham-light','NotoSansCJKjp-Light', 'Montserrat', 'Noto Sans TC', 'Helvetica', 'Arial', 'sans-serif'
$font-family-Ultra = 'Gotham-Ultra', 'Montserrat', 'Noto Sans TC', 'Helvetica', 'Arial', 'sans-serif' 
$font-family-Helvetica = 'Helvetica', 'Arial', 'sans-serif', 'Gotham-Book', 'Montserrat', 'Noto Sans TC'

// 2018.07.20 重新定義 Eric
 
$font-Ultra = 'Gotham-Ultra', 'NotoSansCJKjp-Bold','Montserrat', 'Noto Sans TC', 'Helvetica', 'Arial', 'sans-serif' 
$font-Bold = 'Gotham-Bold', 'NotoSansCJKjp-Bold', 'Montserrat', 'Noto Sans TC', 'Helvetica', 'Arial', 'sans-serif'
$font-Medium = 'Gotham-Medium', 'NotoSansCJKjp-Medium', 'Montserrat', 'Noto Sans TC', 'Helvetica', 'Arial', 'sans-serif'
$font-Regular = 'NotoSansCJKjp-Regular','Gotham-Book', 'Montserrat', 'Noto Sans TC', 'Helvetica', 'Arial', 'sans-serif'
$font-light = 'NotoSansCJKjp-Light','Gotham-Thin', 'Montserrat', 'Noto Sans TC', 'Helvetica', 'Arial', 'sans-serif'





$font-size-basic = 16px
$font-size-larger = rem($font-size-basic * 1.5)
$font-size-large = rem($font-size-basic * 1.25)
$font-size-base = rem($font-size-basic * 1)
$font-size-small = rem($font-size-basic * 0.875)
$font-size-smaller = rem($font-size-basic * 0.75)
$font-weight-bolder = 700
$font-weight-bold = 500
$font-weight-base = 400
$font-weight-thin = 300
$font-weight-thiner = 100
$text-color-title = $gray-darker
$text-color-content = $gray-dark
$text-color-sub = $gray-base
$line-height-taller = 2.25
$line-height-tall = 1.875
$line-height-base = 1.5
$line-height-short = 1.375
$line-height-shorter = 1.125
//
// Document
//
$body-font-family = $font-family
$body-font-size = $font-size-base
$body-font-weight = $font-weight-thin
$body-line-height = $line-height-base
$body-background = $gray-lightest
$body-letter-spacing = 0.025rem

//customer
$primary-color = #27bec2
$input-error-color = #ff7384

$zIndexObject = {
  'addIcons':20,
  'addInterface': 25
  'sidePopup': 100,
  'backgroundMask'  : 100,
  'dialog': 100
}