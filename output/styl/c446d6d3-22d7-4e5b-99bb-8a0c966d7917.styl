@require "variables"

// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.b-image {
    background: Image-backgroundColor;
    background-size: cover;
    background-position: center;
    border: 0;
    display: inline-block;
    line-height: 0;
    position: relative;
    height: auto;
    width: 100%;
}

.b-image::after,
.b-image-loading::before,
.b-image-error::before {
    content: '';
    display: block;
    padding-top: 100%;
    width: 100%;
}

.b-image-loading::before,
.b-image-error::before {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.b-image-loading {
    background: Image-backgroundColor-loading;

    // TODO: replace with CSS shape animation
    &::before {
        background: Image-icon-backgroundColor-loading;
        background: url("data:image/gif;base64,") no-repeat center;
    }
}

