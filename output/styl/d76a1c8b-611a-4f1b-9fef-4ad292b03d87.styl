.header
  position fixed
  top 0
  left 0
  right 0
  padding 30px 0 24px
  background-color #fff
  z-index: 1000
  transition all 0.2s ease
  @media tablet-portrait-large
    padding 20px 0

  &.header__fixed 
    padding 20px 0
    box-shadow: 3px 4px 30px rgba(0, 0, 0, 0.1);
    .header__inner
      align-items center
    .header__row--top
        display none
        @media tablet-portrait-large
            display flex
    .logo__image-wrap
      width 150px

  &__inner 
    display flex
    flex-wrap nowrap
    align-items flex-start
    @media tablet-portrait-large
      align-items center
  &__aside
    margin 0 0 0 auto
    @media tablet-portrait-large
        position fixed
        top 0
        left 0
        z-index 2
        width 0
        height 100vh
        background-color white
        overflow hidden
        transition width .75s .5s ease

  &__rows
    display flex
    flex-direction column
    align-items flex-end
    margin-top 4px
    @media tablet-portrait-large
      align-items center
      width 100%
      height 100%
      margin-top 0
      padding 100px 0 0
      overflow-y scroll
      opacity 0
      visibility hidden
      transition opacity .5s 0s ease, visibility 0s .5s linear
  &__row
    @media tablet-portrait-large
      width 100%
  &__row--top
    display flex
    align-items center
    @media tablet-portrait-large
      display flex
      flex-direction column
      align-items flex-start
      width 100%
      margin 50px 0 0 0
      padding 0 50px 100px
      order 1
    @media phone
      padding 0 20px 100px

  &__row:first-of-type
      margin-bottom 28px

  &__social
    @media tablet-portrait-large
      margin-bottom 24px

  &__email 
    position relative
    margin-left 30px
    text-decoration none
    font-size 16px
    color text-color
    z-index 1
    transition color 0.3s
    @media tablet-portrait-large
      margin 0 0 24px 0
    &:hover 
      color text-color-hover
      &:after
        opacity 0
    &:after
      content ''
      position absolute
      left 0
      bottom 6px
      width 100%
      height 1px
      background-color text-color
      opacity 0.2
      transition opacity 0.3s

  &__phone
    margin-left 29px
    font-size 16px
    text-decoration none
    color text-color
    transition color 0.3s
    @media tablet-portrait-large
      margin 0 0 24px 0
    &:hover 
      color text-color-hover
    &--mobile 
      display none
      margin 0 29px 0 auto
      @media tablet-portrait-large
        display block
      @media tablet-portrait-medium
        margin-right 65px
      @media tablet-portrait-small
        display none

  &__button
    display inline-flex
    align-items center
    justify-content center
    margin-left 20px
    padding 10px 25px 8px 25px
    color #fff
    font-size 16px
    line-height 16px
    border-radius 17px
    background-color main-color
    cursor pointer
    outline none
    transition background-color .3s ease
    @media tablet-portrait-large
      margin 0
    &:hover 
      background-color green-hover
    &--mobile 
        display none
        margin 0 65px 0 0
        @media tablet-portrait-large
          display block
        @media tablet-portrait-medium
          display none
  &__burger
    position absolute
    top 50%
    right 32px
    z-index 2
    transform translateY(-50%)
    display none
    @media tablet-portrait-large
      display block
    @media tablet-portrait-small
      left auto
      right 20px

  
.logo
  display flex
  align-items center
  &__image-wrap
    width 203px
    transition width 0.3s
    // height 86px
    @media tablet-portrait-large
      width 150px

  &__link
    display flex
    width 100%
    height 100%
    text-decoration none
  &__image
    max-width 100%
  &__slogan
    width 145px
    margin-left 20px
    font-size 16px
    font-weight 400
    line-height 18px
    color green2
    @media tablet-landscape-large
      display none
    @media tablet-portrait-large
      display block
    @media phone
      display none

.social 
  &__list
    display flex
    align-items center
  &__item 
    display flex
    align-items center
    justify-content center
    width 34px
    height 34px
    padding 4px 6px
    border-radius 50%
    background-color green2
    transition 0.3s
    &:hover 
      background-color green-hover
    &:not(:last-of-type)
      margin-right 4px
    img 
      max-width 100%

.menu
  @media tablet-portrait-large
    width 0%
    height 100vh
    background-color white
    overflow hidden
    transition width .75s .5s ease
  @media tablet-portrait-large
    width auto
    height auto
    background-color transparent
    overflow visible
    transition none
  &__list
    display flex
    align-items center
    @media tablet-portrait-large
      flex-direction column
      align-items flex-start
      width 100%
      height 100%
      padding 0 50px
      opacity 1
      visibility visible
      transition none
    @media phone
      padding 0 20px
  &__item
    position relative
    display flex
    align-items center
    font-size 13px
    font-weight 500
    line-height 26px
    letter-spacing: 2.3px;
    color text-color
    transition color .3s ease
    text-transform uppercase
    @media tablet-portrait-large
      flex-direction column
      align-items flex-start
      font-size 22px
      line-height 26px

    &:hover
      color text-color-hover

    &--active
      color text-color-hover

    &.has-sub
      &.open 
        .menu__sub
          opacity 1
          visibility visible
        .menu__icon-wrap
          transform rotate(180deg)
      
    
    &.to-eng
      .menu__link
        &:before
          content ''
          width 22px
          height 22px
          margin-right 8px
          background url(../img/english-img.png) no-repeat center
    &.to-rus
      .menu__link
        &:before
          content ''
          width 22px
          height 22px
          margin-right 8px
          background url(../img/rus-img.png) no-repeat center

  &__item + &__item
    margin 0 0 0 39px
    @media tablet-landscape-medium
        margin 0 0 0 25px
    @media tablet-portrait-large
        margin 30px 0 0 0
  &__link
    display inline-flex
    align-items center
    position relative
    color inherit
    text-decoration none
    outline none
    cursor pointer
    text-transform uppercase
    white-space nowrap
  &__icon-wrap 
    display flex
    align-items center
    width 8px
    margin-left 6px
    margin-top -3px
    transition transform 0.3s
    @media tablet-portrait-large
      display none
  &__icon
    max-width 100%

  &__sub
    position absolute
    top 100%
    left 0
    opacity 0
    visibility hidden
    transition opacity 0.3s, visibility 0.3s
    @media tablet-portrait-large
      position static
      opacity 1
      visibility visible
      transition none
    &--2
      position absolute
      top -20px
      left 100%
      opacity 0
      visibility hidden
      transition opacity 0.3s, visibility 0.3s
      @media desktop-medium
        left auto
        right 100%
      @media tablet-portrait-large
        position static
        opacity 1
        visibility visible
        transition none

.sub-menu
  padding 20px 0
  background-color text-color-hover
  @media tablet-portrait-large
    padding 10px 0 0
    background-color transparent
  &--2
    padding 20px 0
    background-color #016626
    @media tablet-portrait-large
      padding 5px 0 5px 30px
      background-color transparent
  &__item
    position relative
    font-size 16px
    line-height 16px
    font-weight 400
    text-transform none
    color #fff
    @media tablet-portrait-large
      color text-color
      font-size 18px
      line-height 18px
    @media phone
      line-height 22px
    &:hover
      @media desktop-hover
        & > .sub-menu__link
          background-color #028433
  
  &__link
    display flex
    align-items center
    padding 10px 30px
    color inherit
    text-decoration none
    letter-spacing 0
    transition 0.3s
    white-space nowrap
    @media phone
      padding 10px 0
      white-space pre-wrap


.js-sub-open 
  &.open 
    & > .menu__sub
      opacity 1
      visibility visible
    & > .menu__sub--2
        opacity 1
        visibility visible


.burger
    position absolute
    width 32px
    height 21px

    &::before
        content ""
        position absolute
        top 0
        left 0
        transform rotate(0deg)
        display block
        width 100%
        height 1px
        background-color black
        transition transform .3s 0s ease, top .3s .4s ease

    &__stroke
        position absolute
        top 10px
        left 0
        display block
        width 100%
        height 1px
        background-color black
        opacity 1
        transition opacity 0s .3s linear

    &::after
        content ""
        position absolute
        top 20px
        left 0
        transform rotate(0deg)
        display block
        width 100%
        height 1px
        background-color black
        transition transform .3s 0s ease, top .3s .4s ease

body.js-burger-menu-is-open
    overflow hidden
    & .burger
        &::before
            top 10px
            transform rotate(45deg)
            transition top .3s 0s ease, transform .3s .4s ease 

        &__stroke
            opacity 0

        &::after
            top 10px
            transform rotate(-45deg)
            transition top .3s 0s ease, transform .3s .4s ease 

    & .menu
        @media tablet-portrait-large
            width 100%
            transition width .75s 0s ease
        @media tablet-portrait-small
            width auto
            transition none

        &__list
            @media tablet-portrait-large
                opacity 1
                visibility visible
                transition opacity .5s .75s ease, visibility 0s .75s linear
            @media tablet-portrait-small
                transition none

    & .header
        &__aside
            @media tablet-portrait-large
                width 100%
                transition width .75s 0s ease

        &__rows
            @media tablet-portrait-large
                opacity 1
                visibility visible
                transition opacity .5s .75s ease, visibility 0s .75s linear