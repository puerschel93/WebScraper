body
	&.woocommerce-checkout
		padding-top 85px
		
		.vj_header
			&__wrapper
					form
						input[type="search"]
							interactive($black,1.4rem)
							border-bottom 1px solid $black
						
							&::placeholder
								color $black
							
				&__logo
					&--image1
						display none !important
					
					&--image2
						display block !important
						height 100%
						width auto

			&__menu
				&--navigation
					li
						a
							color $black !important

		main
			text-align center
			
			article
				header
					h1
						padding-top $margin1
						blockHeader($black)
					
					.post-edit-link
						display none
				
				.woocommerce
					&-notice
						margin-top $margin1
						bodyCopySmall($black)

					&-order-overview
						bodyCopySmall($black)
						margin-bottom $margin1

					&-customer-details
						bodyCopySmall($black)
						margin-bottom $margin2
						
						h2
							font-weight 600 !important
						
						address
							font-style normal
							bodyCopySmall($black)
							margin-top $margin1
						
					&-notices-wrapper
						margin $margin1 auto
					
					&-info
						bodyCopy($black)
						
						a
							bodyCopy($black)
							font-weight 600
					
					.woocommerce-order-details__title
						bodyCopySmall($black)
						font-weight 600 !important
					
					&-form-coupon
						margin-top $margin1
						bodyCopy($black)
						
						&>p
							margin-bottom 15px
						
						.form-row
							display inline-block
							
							#coupon_code
								border-top 0
								border-right 0
								border-bottom 2px solid $black
								border-left 0
								interactive($black,1.6rem)
								padding-bottom 5px
								margin-right 5px
								
								&:focus
									outline none
							
							button
								resetButtonStyles($white)
								background $black
								interactive($white,1.6rem)
								padding 10px 15px
								border 0
					
					&-checkout
						.woocommerce-billing-fields
							h3
								subHeader($black)
								
							&__field-wrapper
								.form-row
									width 90%
									max-width 300px
									margin auto
									
									label
										margin $margin1 0 15px
										display block
										text-align left
										bodyCopy($black)
									
									input
										width 100%
										border 0
										border-bottom 2px solid $black
										interactive($black,1.6rem)
										text-transform initial !important
										padding-bottom 5px
										
										&:focus
											outline none
										
									&.address-field
											margin-bottom 15px
										
										&:last-of-type
											margin-bottom 0
					
					&-additional-fields
						margin $margin1 auto 0
						width 90%
						max-width 300px
						
						h3
							subHeader($black)
						
						label					
							margin $margin1 0 15px
							display block
							text-align left
							bodyCopy($black)
						
						.woocommerce-input-wrapper
							width 100%
							
							textarea
								width 100%
								resize none
								bodyCopy($black)
								border 0
								border-bottom 2px solid $black
								padding-bottom 5px
					
					#order_review_heading
						margin $margin1 0
						subHeader($black)
				
					table
						margin 0 auto $margin1
						
						tr
							bodyCopy($black)
							text-align left
						
						th
							font-weight 600
							
						td
							padding 15px 0
							
							&:first-of-type
								padding-right $margin1
							
							&:last-of-type
								text-align right
								
						tfoot
							td
								padding-right 0 !important
								text-align right
					
					&-checkout-payment
						margin-bottom $margin4
						
						.woocommerce-privacy-policy-text
							display none
						
						#place_order
							resetButtonStyles($white)
							linkStyles($white,$blue)

@media all and (max-width:$desktopM)
	body
		&.woocommerce-checkout
			#vj_header__menutoggle
				color $black