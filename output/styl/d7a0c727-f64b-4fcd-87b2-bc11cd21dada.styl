_whiteTr = rgba(255, 255, 255, 0.65)
_whiteTransp = rgba(255, 255, 255, 0.35)

.root
    padding 4u 5u 8u 5u
    max-width 150u
    align-self center
    +tablet()
        padding 8u 8u 12u 8u
    +desktop()
        flex-direction row
        flex-wrap wrap
        justify-content center
        padding 8u 12u
    +wide()
        padding 15u

.subtitle
    font-size 2.5u
    font-weight 300
    color white
    +wide()
        font-size 3u
.text
    color _whiteTr
    line-height 3u
    font-size 14px
    font-weight 300
    margin-top 2u
    +wide()
        font-size 18px
        line-height 4u
        padding-right 10u
        margin-top 4u

.contactsWrapper
    margin-top 2u
    +wide()
        margin-top 4u
        
.contactsWrapperLine
    flex-direction row
    margin-top 2u
    +wide()
        margin-top 4u

.contactsWrapperLine
    &.first
        margin 0

.contactsWrapperElement
    flex 1
    font-weight 400
    color white
    font-size 14px
    +wide()
        font-size 18px

.contactsWrapperElement
    &.email
        text-decoration-line underline

.detailed
    flex 3
    font-weight 300
    color _whiteTr

.socialWrapper
    flex-direction row
    margin-top 3u

.socialWrapperElement
    margin-left 2u
    width 4u
    height 4u
    border 1px solid _whiteTransp
    radius(circle)
    justify-content center 
    align-items center
    +wide()
        width 8u
        height 8u
        border 2px solid _whiteTransp
        margin-top 8u

.socialWrapperElement
    &.first
        margin-left 0

.snicon
    width 2u
    height 2u
    +wide()
        width 5u
        height 5u

.cprt
    margin-top 4u
    color _whiteTr
    font-size 10px
    +desktop()
        margin-top 12u
    +wide()
        font-size 2u

.wrappChld
    +desktop()
        flex 1
        max-width 50%
        min-width 40%

.btnWrapper
    margin-top 3u

.secondLine
    margin-top 3u
    +desktop()
        margin-top 0

.link
    text-decoration-line underline 
    
.second
    +desktop()
        margin-left 2u
