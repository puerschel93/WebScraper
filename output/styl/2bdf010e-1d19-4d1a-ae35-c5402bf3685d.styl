    font-size 0.8rem
    background-color transparent
    box-shadow none
  .nav-link.active
    background-color $odecopack-color_1 !important
    color white !important
  .md-pills
    li
      padding 0 !important

.index-empresa
  p
    color: #757575;
  .botones-empresa
    height 100%
    .boton
      padding 1px
      .contenido
        height 100%
        background-color white

hr
  border-top 1px solid $odecopack-color_1

.streak
  display block
  position relative
  overflow hidden
  background #e5e5e5
  height 250px
  &.streak-lg
    height 400px
  &.streak-photo
    background-size cover
    background-position center
    background-repeat no-repeat
  &.no-flex
    padding-top 3.125rem
    padding-bottom 3.125rem
    height auto

@media (max-width: 576px)
  .cabezote
    min-height 250px
    h3
      font-size 1rem

@media (min-width: 577px)
  .soluciones
    .barra-soluciones
      margin-top -9rem !important

@media (max-width: 450px)
  .streak
    &.streak-long
      height 600px

@media (min-width: 1366px)
  .streak
    &.streak-photo
      background-attachment fixed

