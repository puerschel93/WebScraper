header
  .view
    background-size cover
    background-repeat no-repeat
    background-position center
  .hm-black-strong-1
  .full-bg-img
    background-color rgba(0, 0, 0, 0.6)

.navbar
  box-shadow none
  margin 0 !important
  padding 0 !important
  font-weight bold
  background-color white

.navbar-soluciones
  padding-top 10px !important

.barra-soluciones
  font-family FontOdecopack
  .botones-soluciones
    .boton
      margin 0 !important
      padding 0 !important
      text-align center !important
      .contenido
        height 100%
        background-color white
        color gray
        border 1px solid $odecopack-color_5
      .contenido:hover
        border none
        background-image url("../img/fondo_botones_hover.jpg")
        background-repeat no-repeat
        background-size auto
        color white !important
    a
      color inherit
      text-decoration inherit

.cabezote
  background-position center !important
  background-repeat no-repeat !important
  background-size cover !important
  min-height 500px
  .card
    background rgba(0, 0, 0, 0.4)
    color white
  .left
    position absolute
    left 0
  .right
    position absolute
    right 0
  .card-text
    color white

.intro
  min-height inherit !important
  .barra-soluciones
    .botones-soluciones
      .boton
        .contenido
          color white
          background-color inherit
          border none
          img
            display inline !important
      a
        color inherit
        text-decoration inherit

.index
  .navbar
    background-color transparent
    .show
      background-color $odecopack-color_1
  .navbar-toggler-icon
    cursor pointer
    color white
  .nav-item
    &.right-border
      border-right 1px solid white
  .nav-link
    color white
  .galeria-menu
    .nav-link
      color black
  .top-nav-collapse
    background-color white
    .show
      background-color white !important
    .nav-link
      color black !important
    .navbar-toggler-icon
      color black !important
    .nav-item
      &.right-border
        border-right 1px solid $odecopack-color_1

.menu-odeco
  .navbar-brand
    padding 0.2rem !important
    width 210px !important
    height 3rem
    position relative
    background-color $odecopack-color_1
    margin-right 3rem

  .navbar-brand:after
    content ''
    position absolute
    top 0
    left 210px
    border-top 3rem solid $odecopack-color_1
    border-right 3rem solid transparent
    width 3rem

footer
  input[type=text],
  input[type=password],
  input[type=email],
  input[type=url],
  input[type=time],
  input[type=date],
  input[type=datetime-local],
  input[type=tel],
  input[type=number],
  input[type=search-md],
  input[type=search],
  textarea.md-textarea
