@require '../../../../lib/palette'

.auction-AuctionInfo
  clearfix()

  +respond-desktop()
    &__upcomingLabel
      display inline
      margin-right 30px
      position relative
      top 1px

  +respond-mobile()
    &__container
      display flex
      align-items center

    &_expandToFullScreen
      align-items flex-start
      background white
      left 0
      padding-left 20px
      padding-top: 80px
      margin-top: 0px !important // overwrite section spacing when expanded
      position fixed
      overflow-y scroll
      top 0
      z-index 970 // Index required to overwrite top mobile nav ¯\_(ツ)_/¯
      width 100%
      height 100%

    &__info-window-controls
      align-items center
      display flex
      justify-content space-between
      left 0
      overlapping-border()
      padding-bottom 6px
      padding-left 20px
      padding-top 10px
      position absolute
      top -1px
      width 100%

    &__info-window-title
      text('subtitle')

    &__info-window-close-button
      cursor pointer
      font-size 20px
      padding-right 15px
      top: -2px

      .icon-close
        &::before
          font-size: 20px
          position relative
          top -5px


  // Left column

  &__primary
    float left
    padding-right 30px
    width 75%

    +respond-mobile()
      float none
      padding-right 20px
      width 100%


  // Right Column

  &__metadata
    float left
    width 25%

    +respond-mobile()
      cursor pointer
      float none
      position: relative
      width inherit

      &_expandToFullScreen
        display none

  &__info-button
    +respond-mobile()
      size = 40px
      border-radius size
      font-size size
      width size
      height size
      border 2px solid getColor('black10')
      display block
      padding-left 14px
      padding-top 2px


  // Main Content

  &__sub-header
    text('text')

  &__title
    text('largeTitle')
    padding-right getSpace(3)

  &__description
    text('text')
    margin getSpace(2, 0)
    > p
      block-margins(getSpace(1.5))
    a
      text-decoration underline

    +respond-mobile()
      margin getSpace(1, 0, 2, 0)

  &__date-time
    text('text')

    +respond-mobile()
      text('small')
      margin-bottom getSpace(2)

  &__register-button
    margin-bottom getSpace(3)

  &__callout
    display flex
    justify-content space-between
    border-bottom 1px solid getColor('black10')
    border-top 1px solid getColor('black10')
    margin getSpace(2, 0)

    +respond-desktop()
      text('subtitle')
      padding getSpace(1, 0)

    +respond-mobile()
      text('caption')
      border-bottom 0
      border-top 0
      margin getSpace(1, 0, 0, 0)
      padding 0

  &__live-label
    text('subtitle')

    +respond-mobile()
      text('small')

  &__live-tooltip
    margin-left 10px
    margin-left 14px
    top -3px

    &:hover::before
      background getColor('black60')
      border 0
      color getColor('white100')

    &::before
      background transparent
      border 1px solid getColor('black10')
      color getColor('black100')
      width 20px
      height @width
      line-height @width - 1px

    +respond-mobile()
      text-transform none
