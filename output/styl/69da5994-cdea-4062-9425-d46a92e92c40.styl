/* util class */
.line-single
  height 1px
  background #e5e5e5
  transform scaleY(0.5)
.line-part
  height 0.2rem
  background #e5eef2
// 单词 字符换行
.word
  word-wrap break-word
  word-break break-all
.ell
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
.shadow
  color #888888
.price-color
