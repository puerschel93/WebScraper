.page-header {
  // remove tap color on header:
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  
  -webkit-transform translateZ(0)
  -webkit-backface-visibility hidden
  top 0
  position fixed
  z-index 10000
  width 100%
  height 64px
  background-color white

  transition 0.2s background-color ease-out
  
  
  &.border {
    border-bottom 1px solid light-grey
  }

  .content-menu {
    left 0
    right 0
    margin 0
  }

  .content-navigation {
    width 100%
    height 100%
    left 0
    top 0
    //background white
    display flex
    justify-content center
  }

  .logo {
    padding 13px
    position absolute
    left 20px
    // this overlaps the first rollover on topics.
    // width 200px
    width: 80px;
    font-size 2rem
    z-index 2

    a {
      // remove tap color on header:
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      
      color gulf-blue
      fontsize-18()
      text-decoration none

      strong {
        fontsize-28()
      }
    }
  }

  .navigation {
    position absolute
    margin 0 auto
    height 64px
    left 0
    right 0
    z-index 1

    li {
      fontsize-15-strong()
      display inline-block
      padding 10px 20px
      position relative
      color manatee
      cursor pointer
      opacity 1
      transition 0.2s opacity linear

      &.active {
        color dark-grey
      }

      &:hover {
        opacity 0.7
      }

      .separator {
        position absolute
        right 0
        top 0
        bottom 0
        margin auto
        width 3px
        height 3px
        border-radius 100%
        background manatee
      }

      &:last-child {

        .separator {
          display none
        }
      }

    }

    a, .back-btn {
      fontsize-13-strong()
      color gulf-blue
      display inline-block
      text-decoration none
    }

    .back-btn {
      .back-arrow {
        transform rotate(-180deg)
        width 15px
        height auto
        display inline-block
        position relative
        top 1px
        transition 0.1s all ease-out
        margin-right 5px
        cursor pointer
      }
      &:hover {
        .back-arrow {
          transform rotate(-180deg) translate(5px, 0);
        }
      }
    }

    &.topics-bar {
      height 100%
      top 0
      padding 0 0 0 0

      &.border {
        border-bottom 1px solid light-grey
      }

      .article-title {
        width 100%
        text-align center
        position absolute
        padding 23px 0
        overflow hidden

        span {
          position relative
        }

        &[data-color-category='partnership'] {
          .title {
            color #39E4AD
          }
        }
        &[data-color-category='company'] {
          .title {
            color #44D8FB
          }
        }
        &[data-color-category='patients'] {
          .title {
            color #FCB5C9
          }
        }
        &[data-color-category='provider'] {
          .title {
            color #F96573
          }
        }
        &[data-color-category='tech'] {
          .title {
            color #C191FF
          }
        }
        &[data-color-category='default'] {
          .title {
            color #FCB5C9
          }
        }

        .title {
          fontsize-14-strong()
          margin-right 10px
          color manatee
          br {
            display none
          }
        }
        .duration {
          margin-left 10px
          fontsize-14-medium()
          color manatee
        }
      }

      ul {
        margin 0px auto
        max-width 70%
        height 100%
        border-left 1px solid light-grey
        position: relative;
        transform translate(0, 0)
        transition 0.2s transform ease-out

        &.hidden {
          transform translate(0, -50px)
        }

        li {

          &[data-color-category='partnership'] {
            &:hover a .title {
              color #39E4AD
            }
          }
          &[data-color-category='company'] {
            &:hover a .title {
              color #44D8FB
            }
          }
          &[data-color-category='patients'] {
            &:hover a .title {
              color #FCB5C9
            }
          }
          &[data-color-category='provider'] {
            &:hover a .title {
              color #F96573
            }
          }
          &[data-color-category='tech'] {
            &:hover a .title {
              color #C191FF
            }
          }
          &[data-color-category='default'] {
            &:hover a .title {
              color #FCB5C9
            }
          }

          border-right 1px solid light-grey
          flex-grow: 1;
          height 100%
          padding 0
          position relative
          transition 0.2s all ease-out
          background white
          opacity 1
          
          // .shadow {
          //   -webkit-box-shadow 2px 2px 16px 0px rgba(0, 0, 0, 0.05)
          //   -moz-box-shadow 2px 2px 16px 0px rgba(0, 0, 0, 0.05)
          //   box-shadow 2px 2px 16px 0px rgba(0, 0, 0, 0.05)
          //   position absolute
          //   left 0
          //   top 49px
          //   transform translateY(-150%)
          //   transition 0.3s transform ease-in-out
          //   height 231px
          //   width 100%
          //   z-index -1
          // }

          a {
            position absolute
            left 0
            height 100%
            overflow hidden
            width 100%
            text-align center
            color manatee
            transition 0.3s height ease-in-out
            background white

            .title {
              display block
              padding 23px 0
              background white
              fontsize-14-strong()
            }

            .round-mask {
              width: 90px;
              height: 90px;
              border-radius: 100%;
              display: block;
              overflow: hidden;
              margin: 40px auto 0px auto;

              img {
                float left
                height 100%
                width auto
                position relative
                left 50%
                top 50%
                transform translate(-50%, -50%)
              }
            }

            .description {
              width 80%
              margin 30px auto 0px auto
              display block
              fontsize-14-medium()
              line-height 2rem
            }

          }
          &:hover {
            // .shadow {
            //   transform translateY(0)
            // }
            opacity 1

            a {
              height 310px
              box-shadow: 0px 1px 5px -1px rgba(0,0,0,0.3);
            }
          }
        }
      }
    }

  }

  .btn-join, .btn-about {
    -webkit-backface-visibility hidden
    padding: 5px 20px;
    margin-top: 14px;
    position: absolute;
    right 20px
    border 1px solid gulf-blue
    text-decoration none
    outline none
    z-index 12
    color gulf-blue
    fontsize-15-strong()
    transition 0.2s all ease-out
    text-decoration none
    cursor pointer
    z-index 3
    background rgba(0,0,0,0)

    &:hover {
      background-color gulf-blue
      color white
    }
  }

  .dropdown-cta {
    position absolute
    left 20px
    top 8px
    width auto
    height auto
    border none
    fontsize-14-strong()
    outline none
    background none
    display none
    padding 0
    color gulf-blue
    cursor pointer
    z-index 5
    &:after {
      content "\203A"
      display: inline-block;
      margin-left: 8px;
      transform rotate(90deg)
      transition 0.3s transform ease-out
      //transform-origin center center
      font-size: 2rem;
      position absolute
    }
  }

  .btn-search {
    position absolute
    right 30px
    top 23.5px
    width 17.5px
    height 15px
    border none
    outline none
    background none
    display block
    padding 0
    cursor pointer
    z-index 3
  }

  &.careers, &.healthsystems {
    background-color zocdoc-yellow
  }

  &.careers, &.healthsystems {
    .navigation {
      top 64px
      padding 11px
      width 100%
      background white
    }
  }

  &.job-detail {
    .navigation {
      top 0px
    }
  }

  &.careers-list {
    .bg {
      width 100%
      height 100%
      background zocdoc-yellow
      position absolute
    }
  }

}
