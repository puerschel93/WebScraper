/*!
* Общие стили и обвертка
*/

@font-face
	font-family: 'Conv_MyriadPro-Regular';
	src: url('fonts/MyriadPro-Regular.eot');
	src: local('☺'), url('fonts/MyriadPro-Regular.woff') format('woff'), url('fonts/MyriadPro-Regular.ttf') format('truetype'), url('fonts/MyriadPro-Regular.svg') format('svg');
	font-weight: normal;
	font-style: normal;
html, body
	height 100%
body
	margin 0
	padding 0
	background #fff
	font-size 16px
	line-height 1.5
	font-family 'Open Sans', Arial, Helvetica, sans-serif
a
	color #0fa7ff
	&:visited
		color #0fa7ff
	&:hover
		color #155b83
img
	border none
.wrapper
	min-height 100%
		&:after
			display table
			clear both
			content ""
/*!-------------------------------------------------------------------------------*/

/*!
* Шапка сайта
*/

.header-wrap
	background #f1f1f1
	width 100%
.header
	position relative
	width 940px
	margin 0 auto
.header_big
		height 150px
.header_small
		height 100px



.logo
	position absolute
	top 12px
	left 10px
	color transparent
	text-shadow none
	font-size 0
	a
		width 100%
		height 100%
		display block
.logo_big
		width 323px
		height 117px
		background url("../img/logo_big.png") no-repeat
.logo_small
		width 183px
		height 66px
		background url("../img/logo_small.png") no-repeat



.about-site
	position absolute
	font-size 18px
	font-weight 600
.about-site_big
		right 12px
		top 25px
.about-site_small
		right 2px
		top 14px



.search
	height 34px
	width 295px
	position absolute
	border-radius 3px
	content: ""
	background-color #e7e7e7
	border none
	font-size 15px
	color #000
	padding-left 20px
	box-shadow inset 0px 2px 5px rgba(0,0,0,0.07)
	&:focus
		outline none
.search_big
	right 12px
	bottom 32px
.search_small
	right 2px
	bottom 15px
.btn
	padding 0
	position absolute
	width 40px
	height 35px
	background-color rgba(0,0,0,0.0)
	background-image url(../img/search.png)
	background-repeat no-repeat
	border none
	cursor pointer
	border-radius 3px
.btn_big
	right 12px
	bottom 28px
.btn_small
	right 2px
	bottom 11px
/*!-------------------------------------------------------------------------------*/

/*!
* Меню сайта
*/

.menu-wrap
	width 100%
	background #5a85c6
	box-shadow inset 0px 4px 0px rgba(0,0,0,0.12)
.menu
	width 940px
	margin 0 auto
	padding 0
	li
		float left
		list-style none
		text-align center
		a
			display block
			text-decoration none
			h2
				color #fff
				font-weight 600
				line-height 1.3
.menu_small
	height 85px
	img
		float left
		margin -6px 12px 18px 10px
	h2
		margin 24px 0 0
		font-size 14px
	li
		position relative
		&:hover
			background: rgb(81,111,171);
			background: -moz-linear-gradient(top,  rgb(81,111,171) 0%, rgb(89,126,194) 100%);
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgb(81,111,171)), color-stop(100%,rgb(89,126,194)));
			background: -webkit-linear-gradient(top,  rgb(81,111,171) 0%,rgb(89,126,194) 100%);
			background: -o-linear-gradient(top,  rgb(81,111,171) 0%,rgb(89,126,194) 100%);
			background: -ms-linear-gradient(top,  rgb(81,111,171) 0%,rgb(89,126,194) 100%);
			background: linear-gradient(to bottom,  rgb(81,111,171) 0%,rgb(89,126,194) 100%);
		&:after
			content ""
			position absolute
			border 12px solid transparent
			border-top solid 12px #567dc0
			left 50%
			margin-left -6px
			bottom -23px
			border-top-color rgba(86,125,192,0.0)
		&:hover:after
			border-top-color rgba(86,125,192,1)
.menu_big
	height 226px
	padding 34px 15px 0px 15px
	h2
		margin 25px 0 0 0
		font-size 18px
	li
		position relative
		&:after
			content ""
			position absolute
			border 12px solid transparent
			border-top solid 12px #567dc0
			left 50%
			margin-left -6px
			bottom -60px
			border-top-color rgba(86,125,192,0.0)
		&:hover:after
			border-top-color rgba(86,125,192,1)
/*!-------------------------------------------------------------------------------*/

/*!
* Следующие семь классов используються исключительно на БОЛЬШОМ меню
* icon_video / .icon_new - это иконки красного цвета на большом меню
*/
.menu_big__study
	width 170px
	margin-right 30px
.menu_big__centers
	width 170px
	margin-right 60px
.menu_big__products
	width 100px
	margin-right 80px
.menu_big__documents
	width 100px
	margin-right 50px
.menu_big__club
	width 150px
.icon-video
	position absolute
	right 12px
	top -10px
.icon-new
	position absolute
	right -17px
	top -12px
/*!-------------------------------------------------------------------------------*/


/*!
* Следующие пять классов используються исключительно на МАЛЕНЬКОМ меню
*/

.menu_small__study
	width 217px
.menu_small__centers
	width 217px
.menu_small__products
	width 155px
.menu_small__documents
	width 155px
.menu_small__club
	width 196px

/*!-------------------------------------------------------------------------------*/


/*!
* Блок с цитатой на главной странице
*/
.quote
	width 940px
	margin 0 auto
	&__portrait
		float left
		padding-top 45px
		width 258px
		text-align center
		img
			width 114px
			height 114px
			border-radius 50%
			border 3px solid #2458ab
			margin 0 70px 0
			box-shadow 0px 5px 5px rgba(0,0,0,0.14)
		h5
			margin 0
			font-size 15px
			font-family 'Conv_MyriadPro-Regular', Arial, Helvetica, sans-serif
		h6
			margin 0
			font-size 13px
			font-family 'Conv_MyriadPro-Regular', Arial, Helvetica, sans-serif
	&-wrapper
		margin-left 258px
		padding 70px 0 70px
	&__blok
		position relative
		width 630px
		padding 30px 30px 30px 60px
		background #ffeda6
		box-shadow 0px 5px 5px rgba(0,0,0,0.14)
		&:after
			content ""
			position absolute
			border 10px solid transparent
			border-right solid 19px #ffeda6
			top 50%
			margin-top -10px
			left -29px
			z-index 5
		p
			margin 0
			color #000
			font-size 20px
			font-style italic
			font-weight 600
			quotes "«" "»"
			&:before
				content open-quote
			&:after
				content close-quote
/*!-------------------------------------------------------------------------------*/


/*!
* layout - используеться как обвертка основной части документа на всех страницах
*/

.layout
	width 940px
	margin 0 auto
	padding-bottom 75px
	&:after
		display table
		clear both
		content ""

/*!
* .section-left / ..section-right - основная часть главной страницы поделенной на два равнозначных блока
* на которой коротко про новости, возможности, блоги аналитиков а так же ссылка на соц группу.
*/
.section-left
	float left
	padding 0 25px 0 10px
.section-right
	margin-left 470px
	padding 0 10px 0 25px
.background-red-line
	background url(../img/bg_red_line.png) repeat-x
	height 22px
	width 436px
.title
	display inline
	background #FFF
	font-weight 600
	color #0fa7ff
	font-size 18px
	padding 0 15px
.short-sections
	padding 0 0 45px 0
	&__block
		margin-top 21px
		height 77px
		line-height 25px
		img
			width 77px
			height 77px
			float left
			margin-right 23px
			border-radius 50%
		p
			margin auto 0
			font-size 14px
		h4
			margin 0
/*!-------------------------------------------------------------------------------*/


/*!
* sidebar - левая часть .layout на второстепенных страницах,
* На которой находиться динамическое меню с оглавлениями разделов, работающее на jQuery.
*/
.sidebar
	width 325px
	margin 0
	padding 45px 0 0
	float left
	height 100%
.additional-nav
	color #0fa7ff
	text-decoration none
	h4
		margin 10px 0
		font-size 18px
		a
			text-decoration none
			border-bottom 1px dashed #0fa7ff
	ul
		margin 10px 0
		padding 0 25px 0 30px
		font-size 16px
		list-style none
		a
			text-decoration none
	:visited
		color #0fa7ff
	:hover
		color #155b83
/*!-------------------------------------------------------------------------------*/

/*!
* content - правая часть .layout на второстепенных страницах,
*/
.content
	width 615px
	margin-left 325px
	padding 45px 0 0
/*!-------------------------------------------------------------------------------*/

/*!
* .news_of_the_day - блок новость дня
*/
.news-of-the-day
	padding-bottom 45px
	border-bottom 2px dashed #c0cacd
	img
		float left
		width 129px
		height 119px
		margin-right 24px
	p
		font-size 15px
/*!-------------------------------------------------------------------------------*/


/*!
* information_sections блок с секциями (.post) в которых короткое описание статей.
*/
.information-sections
	margin-top 70px
.post
	height 160px
	padding 35px 30px 15px 25px
	&:nth-child(2n+1)
		background #EFFCFF
	img
		float left
		margin-right 25px
		width 98px
		height 125px
	h3
		margin 0
		line-height 1.3
		font-size 24px
	p
		margin 10px 0
		font-size 15px
/*!-------------------------------------------------------------------------------*/

/*!
* Счетчик страниц
*/
.page-counter
	padding 30px 0
	height 20px
	margin 0 auto
	width 125px
	ul
		margin 0
		padding 0
		li
			float left
			list-style none
			padding 0 5px
			a
				font-size 16px
/*!-------------------------------------------------------------------------------*/

/*!
* Стили полноценной статьи что на макете inner2
*/
.article
	margin-bottom 45px
	h1
		font-size 24px
		margin 15px 0
		font-weight 18px
	img
		margin 30px 0
	p
		width 10px 0
		font-size 15px
		text-align justify
.date
	color #b8b8b8
	font-size 13px
.topic
	color #b8b8b8
	font-size 14px
	float right
/*!-------------------------------------------------------------------------------*/

/*!
* Подвал страницы
*/
.footer-wrap
	background #f1f1f1
	height 75px
	width 100%
	border-bottom 3px solid #e8e8e8
	box-shadow inset 0px 2px 10px rgba(0,0,0,0.14)
	margin-top -75px
.footer
	position relative
	margin 0 auto
	width 940px
	height 45px
	padding 26px 0 0 0
	h5
		margin 4px 0 0 160px
		color #000
		font-size 14px
		font-family 'Conv_MyriadPro-Regular', Arial, Helvetica, sans-serif
	&__logo
		position absolute
		top 13px
		left 14px
		background url("../img/logo_footer.png")
		width 112px
		height 43px
	&__nav
		margin 0
		padding 0
		li
			float right
			list-style none
			margin-left 24px
			a
				display block
				text-decoration none
				img
					width 24px
					height 24px
/*!-------------------------------------------------------------------------------*/