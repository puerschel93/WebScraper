.d-auth-form
  margin 0 auto
  max-width 350px
  text-align center

  .d-error
    background #FFF
    display inline-block
    color $red
    margin-bottom 15px
    font-size 13px
    padding 2px 5px
    border-radius 3px

  input
    width 100%
    font-size 20px
    margin-bottom 15px
    font-weight 300
    border-radius 5px
    padding 7px 12px
    border none
    line-height 36px
    box-shadow inset 0 0 2px #666

  .d-btn
    width 100%
    border none
    text-align center
    border-radius 5px
    color $highlight-color
    padding 7px 0
    line-height 36px
    font-size 20px
    opacity 1
    box-shadow 0 0 3px #111
    background-color white
    border-bottom 2px solid $highlight-color
    &:hover
      background $action-color
      color white
      border-bottom-color $action-color - 25%

  .d-links
    margin-top 20px
    a
      color white
      opacity 0.75
      text-shadow #000 0 1px 1px
      font-weight 300
      font-size 16px
      &:hover
        opacity 1
        text-decoration underline

.d-plans
  .d-top
    text-align center
    margin 15px 0 70px 0
  .d-features
    li 
      max-width 800px
      width 100%
      margin 30px auto 20px auto
      text-align left
      display block
    p
      margin-bottom 8px
  .ui-widget-content
    margin 15px auto 30px auto
    max-width 250px
  .ui-widget-header
    background $purple
  .ui-slider-handle
    cursor pointer

.d-plan-option
  font-size 40px
  background-image url($contrast-texture-url)
  background-color #222
  display inline-block
  padding 15px 20px
  border-radius 5px
  box-shadow 0 0 2px #333
  color #FFF
  cursor default
  span
    font-size 14px
    display block

.d-plan-text
  margin 15px 0 0 0
  font-weight bold
  font-size 12px  
  small
    font-weight normal
    display block
    line-height 8px
    margin-bottom 20px


.d-settings
  
  .email-times
    margin-top 20px
    
    .d-input
      label
        text-transform capitalize



.d-importer
  textarea 
    background transparent
    border none
    width 100%
    margin-top 30px
    max-height 1000px
    overflow auto
  .d-processing
    padding 20px 25px
    background #FFF
    border 1px solid #DDD
    border-radius 2px
    margin-top 20px
    display none
    p 
      margin 5px 0
    &.on
      display inline-block
