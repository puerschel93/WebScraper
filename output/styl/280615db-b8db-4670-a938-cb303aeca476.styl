// 代码快样式
.language-javascript::before
.language-js::before
.language-html::before
.language-typescript::before
.language-vue::before
.language-json::before
.language-css::before
.language-php::before
.language-python::before
.language-c::before
.language-java::before
.language-less::before {
  color: #ddd !important;
}
.language-javascript
.language-js
.language-html
.language-typescript
.language-vue
.language-json
.language-text
.language-css
.language-python
.language-c
.language-php
.language-java
.language-less {
  background-color: #403169 !important;
}
.token.keyword {
  color: #ccb4ed;
}
.token.function {
  color: #81b9ed;
}
.token.punctuation {
  color: #c7ddd4;
}
.token.operator {
  color: #eee;
}
.token.string,
.token.regex,
.token.attr-value {
  color: #afe17c;
}
.token.class-name {
  color: #fff;
}
.token.comment {
  color: #ddd;
}
.token.number {
  color: #33cccc;
}
.token.boolean,
.token.attr-name {
  color: #f99675;
}
.token.parameter {
  color: #beaaa1;
}
.token.tag {
  color: #99cccc;
}
.token.selector {
  color: #f190b4;
}
.token.property {
  color: #f2deb3;
}
.token.atrule {
  color: #dea5de;
}


