$color--jet-black = #000
$color--black = #222
$color--blue = #5674b9
$color--ghost = #f8f8f8
$color--graphite = #444
$color--grey = #eee
$color--grey--mid = darken($color--grey, 10%)
$color--grey--dark = darken($color--grey, 30%)
$color--purple = #8560a8
$color--red = #dc143c
$color--silver = #727272
$color--steel = #666
$color--turquoise = #02fa9c
$color--white = #fff

$gradient =
  background $color--blue
  background-image linear-gradient(-225deg, $color--purple 0, $color--blue 30%, $color--turquoise 100%)

$triangles =
  $angle = 60deg
  $height = 10em
  $width = ($height * sin(90 - $angle)) / sin($angle)
  $border-color = $color--grey--mid
  $background-color = $color--grey

  background linear-gradient((180 - $angle), transparent calc(75% - 1px), $border-color 75%, transparent calc(75% + 1px)) 0 0
    , linear-gradient((180 + $angle), transparent calc(75% - 1px), $border-color 75%, transparent calc(75% + 1px)) 0 0
    , linear-gradient((180 - $angle), transparent calc(75% - 1px), $border-color 75%, transparent calc(75% + 1px)) ($width / 2) ($height / -2)
    , linear-gradient((180 + $angle), transparent calc(75% - 1px), $border-color 75%, transparent calc(75% + 1px)) ($width / 2) ($height / 2)
    , linear-gradient($border-color, transparent 1px, transparent 50%, $border-color 50%, transparent calc(50% + 1px)), $background-color
  background-size $width $height

$zigzag($top = 0, $border-color = $color--white, $background-color = transparent)
  $angle = 55deg
  $height = 2.5em
  $width = (($height / sin($angle)) * sin(90 - $angle))

  background linear-gradient((180 - $angle), $border-color 25%, transparent 25%)
    , linear-gradient((180 + $angle), $border-color 25%, transparent 25%)
    , linear-gradient((360 - $angle), $border-color 25%, transparent 25%)
    , linear-gradient($angle, $border-color 25%, transparent 25%), $background-color
  background-position ($width * -1) $top, ($width * -1) $top, 0 $top, 0 $top
  background-size ($width * 2) ($height * 2)
  height 100%
  position relative
  z-index 1

$font--base = 'chalet', sans-serif
$font--brand = 'ostrich', $font--base

