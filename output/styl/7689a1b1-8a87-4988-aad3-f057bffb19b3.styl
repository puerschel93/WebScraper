// Custom styles.

::-webkit-scrollbar {
  width: 14px;
  height: 14px;
}
::-webkit-scrollbar-corner {
  background-color: transparent;
}
::-webkit-scrollbar-thumb {
    height: 6px;
    -moz-border-radius: 7px;
    -webkit-border-radius: 7px;
    border-radius: 7px;
    border: 4px solid transparent;
    background-color: #aaa;
    -moz-background-clip: padding-box;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
}
html,body{
    font-size: 14px;
}
// 图片放大
.post-body img:not(.no-increase){
    cursor: pointer;
    cursor: zoom-in;
}
.post-body a.no-line{
    border: none;
}
.post-body a img.no-increase.inline{
    display: inline-block;
    border: none;
    position: relative;
    top: 8px;
}
.lee-increase{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #333;
    background-color: #333c;
    z-index: 99999;
    display: none;
    &>img{
        max-width: 90%;
        min-width: 20%;
        position: absolute;
        top: 50%;
        left: 50%;
        cursor: pointer;
        cursor: zoom-out;
        transform: translate(-50%, -50%);
    }
}
.posts-expand{
    .post-block{
        .lee-block-ul{
            padding:0 0 10px 0;
            margin:0px;
            overflow:hidden;
            .lee-block-li{
                width: 200px;
                height:180px;
                list-style:none;
                float:left;padding:10px;
                box-sizing: border-box;
                .lee-block-img{
                    width: 100%;
                    height:150px;
                    margin: 0px;
                }
                .lee-block-a{
                    width: 50%;
                    height:30px;
                    display: inline-block;
                    border:none;
                    text-align:center;
                    background-color: #f2f2f2;
                    &.lee-block-a-100{
                        width: 100%;
                    }
                }
            }
        }
    }
}


// 背景
.lee-container{
    position: fixed;
    z-index:-1;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color: rgba(255,255,255,.3);
}
.posts-expand article.post-content{
    background-color: rgba(255,255,255,.7);
    box-shadow:0 0 4px rgba(0,0,0,.2);
    padding: 30px;
    border-radius:10px;
    margin-bottom: 60px;
    border-radius: 10px;
}
h1, h2, h3, h4, h5, h6{
    margin: 20px 0 15px;
}
.posts-expand .post-title{
    font-size: 20px;
    margin: 20px 0 15px;
}
.posts-expand .post-meta{
    color: #555;
}
.site-nav,
nav.pagination,
.footer-inner,
.post-block.page,
.lee-nav-content{
    background-color: rgba(255,255,255,.7);
    color:#666;
    border-radius: 10px;
}
.lee-nav-content{
    margin-bottom: 20px;
}
.posts-collapse .post-block{
    margin-top: 70px;
    background-color: rgba(255,255,255,.7);
    color: #333;
    border-radius: 10px;
    padding: 20px 0;
}
.post-block.page,
.lee-nav-content{
    padding: 30px;
}
.tag-cloud-tags>a{
    color: #666 !important;
}
#menu{
    font-weight: 600;
    li>a{
        font-size: 16px;
    }
}
.post-footer .post-eof{
    display: none;
}
.post-button>a{
    background-color: #fff;
    color: #333;
    border: 2px solid #222;
    border-radius:5px;
}
.lee-bg{
    position: fixed;
    z-index:-2;
    top:0;
    left:0;
    width:100%;
    height:100%;
    img{
        width:100%;
        height:100%;
    }
}

// 广告
.advertise-top{
    background-color: rgba(255,255,255,.7);
    color: #666;
    overflow: hidden;
    position: relative;
    width: 700px;
    margin: 0 auto;
    box-shadow: 0 0 4px rgba(0,0,0,.2);
    border-radius: 10px;
    text-align: center;
    margin-bottom: 15px;
}
@media (min-width: 1200px){
    .advertise-top{
        width: 800px;
    }
}
@media (min-width: 1600px){
    .advertise-top{
        width: 900px;
    }
}
@media (max-width: 767px){
    .advertise-top{
        width: auto;
        margin: 0 20px;
    }
}


#sidebar{
    background-color: rgba(100, 100, 100, 0.5);
    box-shadow: rgb(204, 204, 204) 0px 2px 6px inset;
    .site-description,a{
        color: #eee;
    }
    .site-author-image{
        border: 2px solid #999;
    }
}
@media (max-width: 767px){
    #sidebar{
        background-color: rgba(100, 100, 100, 0.8);
    }
    .posts-collapse{
        margin-left:20px;
    }
    .site-nav {
        border: none;
    }
}

// 标题css动画
.custom-logo-site-title{
    a.brand{
        color: rgba(255,255,255,.7);
        background: rgba(255,255,255,.7);
        text-shadow: #be4ff0 1px 1px 0, #be4ff0 -1px 1px 0, #be4ff0 1px -1px 0, #be4ff0 -1px -1px 0;
        -webkit-transition: text-shadow 1s ease;
        -moz-transition: text-shadow 1s ease;
        -o-transition: text-shadow 1s ease;
        -ms-transition: text-shadow 1s ease;
        transition: text-shadow 1s ease;
        &:hover{
            color: rgba(30, 144, 137, 0.7);
            text-shadow: rgba(51, 51, 51, 0.7) 10px 10px 10px;
        }
    }
}
.site-brand-container{
    margin-bottom: 15px;
}

// 评论背景
.comments{
    background-color: rgba(255,255,255,.7);
    box-shadow: 0 0 4px rgba(0,0,0,.2);
    margin: 0;
    padding: 30px;
    border-radius: 10px;
    &.v .vwrap{
        border: 1px solid #ff4200;
    }
}

.feed-link a {
    display: inline-block;
    padding: 0 15px;
    color: #fc6423;
    border: 1px solid #fc6423;
    border-radius: 4px;
}
.feed-link a:hover {
    color: #fff;
    background: #fc6423;
    text-decoration: none;
    border: 1px solid #fc6423;
}