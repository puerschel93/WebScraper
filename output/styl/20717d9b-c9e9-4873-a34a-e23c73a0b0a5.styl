.shop-detail
  .title1
    margin-bottom 50px
    @media (max-width: 767px)
      margin-bottom 30px
  &__top
    display grid
    grid-template-columns 1fr 4fr
    margin-bottom 100px
    @media (max-width: 1267px)
      margin-bottom 50px
      display flex
      justify-content space-between
      align-items center
    @media (max-width: 767px)
      display block
      margin-bottom 30px
  &__logo
    padding-right 30%
    @media (max-width: 1267px)
      padding 0
      width 200px
    @media (max-width: 1023px)
      width 130px
    img
      width 100%
      display block
  &__nav
    display flex
    flex-wrap wrap
    justify-content flex-end
    @media (max-width: 767px)
      justify-content flex-start
    a
      text-decoration none
      transition .5s
      color inherit
      margin-left 50px
      margin-top 20px
      @media (max-width: 1680px)
        font-size 20px
        margin-left 30px
      @media (max-width: 1267px)
        font-size 14px
        margin-top 0
      @media (max-width: 1023px)
        font-size 12px
      @media (max-width: 767px)
        margin-top 20px
        margin-right 30px
        margin-left 0
      &:hover
        @media (hover)
          color var(--gold)
      &:first-child
        margin-left 0
  &__content
    display grid
    grid-template-columns repeat(2, minmax(0, 1fr))
    @media (max-width: 1267px)
      display block
  &__text
    margin-bottom 50px
    padding-right 70px
    @media (max-width: 1680px)
      font-size 16px
    @media (max-width: 1267px)
      padding-right 0
    @media (max-width: 767px)
      font-size 14px
    p:first-child
      margin-top 0
  &__brands
    margin 30px 0 0
    padding 0
    list-style none
    display flex
    flex-wrap wrap
    li
      &::after
        content '/'
        padding 0 10px
      &:last-child::after
        display none
      @media (max-width: 767px)
        margin-bottom 5px
  &__left
    padding-bottom 80px
  &__right
    position relative

  &__contacts
    display flex
    @media (max-width: 1023px)
      display grid
      grid-template-columns 1fr 1fr
      grid-gap 50px
    @media (max-width: 767px)
      grid-template-columns 1fr
  &__contact
    margin-right 100px
    @media (max-width: 1023px)
      margin-right 0
    h3
      font-size 24px
      font-family var(--text-font)
      margin 0 0 15px
      @media (max-width: 1023px)
        font-size 20px
    p
      margin-bottom 25px
    a
      display flex
      align-items center
      text-decoration none
      color inherit
      margin-bottom 10px
      .icon
        width 20px
        margin-right 12px
        color var(--gold)
        svg
          display block
    .btn
      min-width 170px
  &__slider
    @media (max-width: 1267px)
      margin-bottom 70px
    @media (max-width: 767px)
      margin-bottom 50px
    .slick-arrow
      top -65px
      right 0
      @media (max-width: 1680px)
        top -55px
      @media (max-width: 1023px)
        top -45px
      &.slick-prev
        right 90px
        @media (max-width: 1680px)
          right 80px
        @media (max-width: 1023px)
          right 60px
    .slick-list
      @media (max-width: 1267px) and (min-width: 768px)
        margin 0 -10px
  &__slide
    @media (max-width: 1267px) and (min-width: 768px)
      margin 0 10px
    img
      width 100%
      height auto
  &__contact-links
    margin 30px 0
    display flex
    a
      margin-right 25px
    .link
      color var(--gray3)

.message-form
  background #fff
  padding 70px 40px
  width 800px
  @media (max-width: 1267px)
    width 600px
    padding 60px 30px
  @media (max-width: 767px)
    max-width calc(100vw - var(--scrollbar-width))
    padding 60px 20px
  .reg-form__input
    width 100%
    margin-right 0
    textarea
      width 100%
      height 180px
      font-family inherit
      padding 21px 17px 20px
      font-size inherit
      border 3px solid var(--gray3)
      resize none
      &:focus
        border 3px solid var(--gold)
