.company-main
  .banner
    background url('./img/bg.png')
    background-size cover
    background-position 50%
    width 100%
    height 304px
  .main
    font-family PingFang SC
    position relative
    top -86px
    left 0
    right 0
    z-index 1
    border-radius 20px 20px 0 0
    background-image linear-gradient(rgba(255, 255, 255, .9) 0, rgba(255, 255, 255, .91) 1%, rgba(255, 255, 255, .92) 2%, rgba(255, 255, 255, .99) 3%, rgba(255, 255, 255, .99) 4%, rgba(255, 255, 255, .99) 5%, rgba(255, 255, 255, .99) 6%, rgba(255, 255, 255, .99) 7%, rgba(255, 255, 255, .99) 8%, rgba(255, 255, 255, .99) 9%)
    .flex-s-a
      display flex
      justify-content space-around
      align-items center
    .flex-s-b
      display flex
      justify-content space-between
      align-items center
    .flex-s-s
      display flex
      justify-content flex-start
      align-items center
    .flex-c-c
      display flex
      justify-content center
      align-items center
    .padding-24
      padding-left 16px
      padding-right 16px
    .word
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
    .subTitle
      h3
        font-size 16px
        font-weight bold
        span
          font-weight normal
          color #AEAEAE
      p
        margin 0
        font-size 12px
        span
          color #999
          margin-right 5px
        i
          font-size 12px
          color #999
    .divider
      width 100%
      background #eee
      height 2px
    &-header-part
      .bottom-border
        padding-bottom 12px
        border-bottom 1px solid #eee
      .title
        padding-top 26px
        align-items start !important
        h2
          font-size 20px
          font-weight bold
          line-height 1.2
          margin-right 40px
          position relative
          font-family PingFang SC
          &:before
            content ''
            width 24px
            position absolute
            bottom -14px
            left 0
            border-bottom 4px solid #007BFF
        img
          width 76px
          height 76px
          border-radius 10px
        p.sliceName
          width 66px
          height 66px
          border-radius 10px
          padding 10px
          background rgb(204, 204, 255)
          color #fff
          font-size 16px
          margin 0
          text-align center
          letter-spacing 3px
        .info
          margin-top 20px
          p
            font-size 12px
            color #9E9E9E
            margin-bottom 0
      .rater
        p
          margin 0
          margin-left 20px
        span
          &:nth-of-type(1)
            font-size 16px
            font-weight bold
            font-family PingFang SC
            color #313131
          &:nth-of-type(2)
            font-size 10px
            color #9e9e9e
            margin-left 5px
      .location
        margin-top 15px
        span.site
          width 80%
          font-size 12px
          color #5B6773
          line-height 1
          i
            margin-right 5px
            color #000
        span.earth
          line-height 1
          border-left 1px solid #ccc
          padding-left 10px
          i
            color #000
            &:nth-of-type(1)
              margin-right 10px
      .integrity
        margin-top 10px
        p
          width 95%
          margin 0
          line-height 1
          font-size 12px
          display flex
          justify-content flex-start
          align-items center
          span
            &:nth-of-type(1)
              font-weight bold
              font-size 13px
              color #333
            &:nth-of-type(2)
              width 75%
              margin-left 10px
              display inline-block
              color #666
        i
          font-size 12px
          color #bbb
      .info-tab
        margin-top 16px
        text-align center
        li
          img
            width 46px
          h3
            font-size 10px
            margin 0
            padding 0
            line-height 1.5
            color #333333
      .chart
        margin-top 10px
        font-weight bold
        p
          margin-bottom 10px
          color #333
          font-family PingFang SC
          i
            font-size 14px
          &:nth-of-type(1)
            i
              font-size 18px
    &-product-part
      ul
        li
          font-size 14px
          line-height 2.4
          position relative
          padding-left 10px
          border-bottom 1px solid #eee
          color #5B6773
          &:before
            content ''
            width 3px
            height 10px
            position absolute
            bottom 11px
            left 0
            background #007bff
          &:nth-of-type(2)
            &:before
              background #b8b8b8
          &:nth-of-type(3)
            border-bottom 3px solid #eee
            &:before
              background #e92137
      .analyze
        line-height 2.2
        i
          font-size 18px
          font-weight bold
          margin-right 10px
        span
          font-size 15px
          font-weight bold
          color #333
          font-family PingFang SC
    &-investor-part
      padding-bottom 15px
      h3
        font-size 16px
        font-weight bold
      ul
        li
          margin-top 10px
          padding-bottom 16px
          border-bottom 2px solid #EEE
          &:last-child
            padding-bottom 0
            border-bottom none
        section
          p
            margin 0
          img
            width 66px
            height 66px
            margin-right 20px
          .right
            width 100%
            .title
              font-size 16px
              margin-bottom 0
              word-break break-all
            .info
              .star
                color #E95E21
                margin 0
                span
                  margin-left 5px
              .count
                font-size 10px
                color #999
                span:nth-of-type(2)
                  padding 0 5px
            .podi
              font-size 12px
              margin-top 5px
              span
                display inline-block
                &:nth-of-type(1)
                  color #999
                  background #fafafa
                  padding 2px 8px
                &:nth-of-type(2)
                  color #d4d4d4
        .tip
          font-size 12px
          width 100%
          padding 5px 10px
          text-align center
          margin-top 20px
          background-color #f8f8f8
          color #999
    &-opion-part
      h3
        font-size 16px
        font-weight bold
      ul
        li
          padding-bottom 20px
          border-bottom 3px solid #eee
          &:last-child
            border none
          .title
            color #666
            font-size 16px
            word-break break-all
          p
            margin 0
            span
              color #999
              font-size 10px
              margin-right 10px
          div
            margin-top 5px
            span
              border 1px solid #007bff
              color #007bff
              font-size 10px
              padding 2px 4px
            div.at
              margin-top 0
              overflow hidden
              text-overflow ellipsis
              white-space nowrap
              width 290px
              padding 0 10px
              color #999999
              font-size 10px
    &-service-part
      padding-bottom 15px
      i
        color #007bff
        font-size 16px
        font-weight bold
        margin-right 3px
      ul
        flex-wrap wrap
        justify-content flex-start !important
        li
          width 33%
          span
            font-size 15px
            color #A4A4A4
        &:nth-of-type(2)
          margin-top 10px
    &-cert-part, &-honor-part
      padding-bottom 10px
      .tip
        border-top 1px solid #EEEEEE
        padding-top 8px
        text-align center
        margin 10px 0 0
        color #999999
        font-size 14px
        i
          margin-left 5px
          color #888
      span, i
        color #999
        font-size 14px
        line-height 2
      span:nth-of-type(2)
        font-size 12px
        i
          font-size 12px
          margin-left 6px
    &-branch-part
      img
        width 66px
        height 66px
        border 1px solid rgba(238, 238, 238, 1)
        margin-right 15px
      li
        align-items flex-start !important
        padding 12px 0 18px
        div
          h4
            color #444
            font-size 16px
            font-weight 550
            margin 0
            line-height 1.2
          p
            margin 0
            line-height 1.5
            i
              font-size 14px
              color #bbb
              margin-right 5px
            span
              font-size 12px
              color #bbb
            &:nth-of-type(1)
              margin-top 10px
    &-brand-part
      padding-bottom 15px
      .desc
        color #999999
        font-size 12px
        line-height 1.8
        margin 0
    &-consultant-part
      .slide
        width 100%
        overflow-x scroll
        padding-bottom 15px
        ul
          li
            margin-right 10px
            img
              width 100px
              height 132px
            div
              margin-top 10px
              p
                margin 0
                text-align center
                &:nth-of-type(1)
                  color #606E82
                  font-size 14px
                &:nth-of-type(2)
                  color #AAAAAA
                  font-size 10px
    &-activity-part
      .slide
        width 100%
        overflow-x scroll
        padding-bottom 15px
        ul
          li
            width 258px
            margin-right 10px
            img
              width 258px
              height 135px
            div
              margin-top 5px
              p
                margin 0
                &:nth-of-type(1)
                  color #222222
                  font-size 15px
                &:nth-of-type(2)
                  color #666666
                  font-size 10px
