animation_children_2(limit)
	for num in (1..limit)
		&:nth-child({num})
			if(num%2==1)
				transform translate(-100%,0) scale(0)
			if(num%2==0)
				transform translate(100%,0) scale(0)
				


animation_children_3(limit)
	for num in (1..limit)
		&:nth-child({num})
			if(num%3==1)
				transform translate(-100%,0) scale(0)
			if(num%3==2)
				transform translate(0,100%) scale(0)
			if(num%3==0)
				transform translate(100%,0) scale(0)

					

animation_children_all_from_down(limit)
	for num in (1..limit)
		&:nth-child({num})
			transform translate(0,100%) scale(0)



animation_children_all_from_top(limit)
	for num in (1..limit)
		&:nth-child({num})
			transform translate(0,-100%) scale(0)


				
animation_children_delays(limit,time)
	for num in (1..limit)
		&:nth-child({num})
			transition-delay (time*num - time)



animation_2(limit,delay=.4s)
	&.torelease
		.release-item
			transition all .6s
			animation_children_2(limit)
			animation_children_delays(limit,delay)
		&.release 
			.release-item
				transform translate(0,0) scale(1)
				

