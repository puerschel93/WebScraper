$bg-color = #030303
$primary-color = #bbe666
$text-color = rgb(124,131,144)
$text-color-dark = #253615
$heading-color = #fbfdfd
$block-bg-color = rgb(25,31,40)
$block-bg-color-secondary = rgb(34,44,52)
$border-color = #24282d

$border-radius = 18px
$font-size-base = 14px
$font-size-lg = $font-size-base + 2px
$font-size-sm = $font-size-base - 2px

$duration = 0.3s

$accentColor = $primary-color
$textColor = $text-color
$borderColor = $block-bg-color
html, body
    background-color $block-bg-color
.sidebar
    background-color $block-bg-color
.navbar
    background-color $block-bg-color
.demo-block
    border-color $border-color !important
    .description
        background-color $block-bg-color-secondary !important
        border none !important
    .meta
        border-color $border-color !important
    .demo-block-control
        background-color $block-bg-color-secondary !important
        border-top-color $border-color !important
        .copy-action
            color $text-color !important
    .demo-block-control:hover
        color $text-color !important
.demo-block.hover
    box-shadow none !important

th, td
    border-color $border-color
tr:nth-child(2n)
    background-color $block-bg-color-secondary
.navbar .links
    background-color: transparent
.search-box input
    background-color: $block-bg-color-secondary
.suggestions
    background-color: $block-bg-color-secondary !important
li.suggestion:hover,
li.suggestion a:hover,
.suggestion.focused
    // background-color: blue !important
    background-color: transparent !important