.company-description
  font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
  font-size: 14px
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.7)
  .page-wrap
    border-left: 1px solid #e4e4e4
    border-right: 1px solid #e4e4e4
  .main
    margin-top: 32px
    ol
      color: #878787
      font-size: 13px
      font-weight: normal
      text-indent: -20px
      text-shadow: 0 1px 0 rgba(255, 255, 255, 0.7)
      list-style: decimal inside none
      margin: 13px 0px
      padding-left: 35px

    .left-column p, .center-column p, .right-column p
      color: #878787
      font-size: 13px
      margin-bottom: 5px
      text-indent: 15px
      text-shadow: 0 1px 0 rgba(255, 255, 255, 0.7)
    .left-column p:last-child, .center-column p:last-child, .right-column p:last-child
      margin-bottom: 15px
    .left-column
      get_left_divider()
      display: table-cell
      padding-right: 19px
      width: 451px
      border-right: 1px solid #e4e4e4
    .right-column
      display: table-cell
      padding-left: 16px
      width: 448px
    h2
      color: #4A4A4A
      font-size: 14px
      font-weight: normal
      margin: 9px 0 6px
      text-align: center
      text-shadow: 0 1px 0 rgba(255, 255, 255, 0.7)
    p strong
      font-weight: bold
    .first, .second, .third, .fourth, .fifth
      clear: both
      height: 33px
      margin-left: -17px
      width: 961px
    .first
      get_main_sprite()
      background-position: 0 -38px
    .second
      get_main_sprite()
      background-position: 0 -509px
    .third
      get_main_sprite()
      background-position: -1866px -534px
    .fourth
      get_main_sprite()
      background-position: 0 -76px
    .fifth
      get_main_sprite()
      background-position: 0 0