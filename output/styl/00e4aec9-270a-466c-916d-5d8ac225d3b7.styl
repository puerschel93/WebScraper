
/*SPECIALS*/
.special-offers
  background-color: #343434
  color: #C6C6C6
  font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
  min-height: 502px
  overflow: hidden
  a
    color: #C6C6C6
  .page-wrap

    min-height: 502px
    overflow: hidden
    padding: 0 18px
    width: 929px
    border-left: 1px solid #5c5c5c
    border-right: 1px solid #5c5c5c
    .title
      font-size: 21px
      margin-top: 16px
      clearfix()
      .cities
        display: block
        .city-name
          border-left: 1px solid rgba(0, 0, 0, 0.3)
          border-right: 1px solid rgba(255, 255, 255, 0.1)
          color: #808080
          cursor: pointer
          display: block
          float: left
          height: 32px
          line-height: 36px
          margin: 0
          padding: 4.5px 8px
          transition-duration: 0.3s
          transition-property: color
          vertical-align: middle
        .city-name.first
          border-left: medium none
        .city-name.last
          border-right: medium none
        .city-name.active
          color: #FFFFFF
          cursor: default
          border: 0 solid
      h3
        font-size: 21px
        height: 40px
        line-height: 40px
        vertical-align: middle
        .addition
          display: inline
      .cities
        float: left
        white-space: nowrap
    .countries-menu
      float: left
      font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
      font-size: 14px
      line-height: 42px
      margin: 10px -25px 0 0
      white-space: nowrap
      .item
        border-radius: 3px 3px 3px 3px
        display: inline-block !important
        float: none !important
        margin-left: 1px
        max-height: 42px
        padding: 0 15px
        position: relative
      .item:hover
        color: #FFFFFF
        background-color: #333333
      .item.active, .item:active
        background: none repeat scroll 0 0 #76B718
        color: #FFFFFF
      .item.active
        cursor: default
      .item:first-child
        margin-left: 0
    .country
      clear: left
      overflow: hidden
      padding: 30px 0 0
      .left
        float: left
        padding-bottom: 20px
        width: 304px
        span.thumb-wrapper
          border: 7px solid #292929
          border-radius: 152px 152px 152px 152px
          display: inline-block
          position: relative
          .shutter
            get_main_sprite()
            background-position: 0 -547px
            height: 304px
            left: -7px
            overflow: hidden
            position: absolute
            top: -7px
            width: 304px
            z-index: 191
          .shutter-container
            height: 304px
            left: -7px
            overflow: hidden
            position: absolute
            top: -7px
            width: 304px
            z-index: 190
            .shutter-wing
              get_main_sprite()
              background-position: 0 -1361px
              height: 500px
              position: absolute
              transition-duration: 0.6s
              transition-property: all
              width: 416px
            .shutter-wing.wing-1
              get_main_sprite()
              background-position: 0 -856px
            .shutter-wing.wing-1.open
              left: -158px
              top: 151px
              transform: rotate(60deg)
            .shutter-wing.wing-2.open
              left: -272px
              top: 67px
              transform: rotate(90deg)
            .shutter-wing.wing-3.open
              left: -327px
              top: -61px
              transform: rotate(120deg)
            .shutter-wing.wing-4.open
              left: -307px
              top: -201px
              transform: rotate(150deg)
            .shutter-wing.wing-5.open
              left: -222px
              top: -311px
              transform: rotate(180deg)
            .shutter-wing.wing-6.open
              left: -94px
              top: -366px
              transform: rotate(210deg)
            .shutter-wing.wing-7.open
              left: 45px
              top: -347px
              transform: rotate(240deg)
            .shutter-wing.wing-8.open
              left: 158px
              top: -264px
              transform: rotate(270deg)
            .shutter-wing.wing-9.open
              left: 211px
              top: -137px
              transform: rotate(300deg)
            .shutter-wing.wing-10.open
              left: 193px
              top: 3px
              transform: rotate(330deg)
            .shutter-wing.wing-11.open
              left: 107px
              top: 114px
              transform: rotate(360deg)
            .shutter-wing.wing-12.open
              left: -20px
              top: 168px
              transform: rotate(390deg)
      .content
        margin-left: 304px
        min-height: 357px
        padding-left: 25px
        transition-duration: 1s
        transition-property: min-height
        .offers-list
          border-bottom: 1px solid rgba(255, 255, 255, 0.05)
          border-top: 1px solid rgba(0, 0, 0, 0.2)
          min-height: 216px
          .offer
            border-bottom: 1px solid rgba(0, 0, 0, 0.2)
            border-top: 1px solid rgba(255, 255, 255, 0.05)
            color: #C6C6C6
            display: block
            padding: 15px 120px 15px 0
            position: relative
            .caption
              display: block
              font-family: Georgia, "Nimbus Roman No9 L", serif
              font-size: 18px
              font-style: italic
              line-height: 24px
              overflow: hidden
              text-overflow: ellipsis
              white-space: nowrap
            .period
              color: #598A12
              display: block
              font-size: 15px
            .price
              bottom: 20px
              color: #4D9900
              display: block
              font-size: 21px
              font-weight: bold
              line-height: 24px
              position: absolute
              right: 0
              transition-duration: 0.3s
              transition-property: all
          .offer:hover
            .caption
              color: #ffffff
        .more-wrapper
          padding: 20px 0
          text-align: center
          a.more
            background-color: #76B718
            border: 1px solid #70AE17
            border-radius: 3px 3px 3px 3px
            color: #FFFFFF
            cursor: pointer
            display: inline-block
            font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
            font-size: 13px
            height: 37px
            line-height: 37px
            min-width: 101px
            padding: 2px 10px 2px 7px
            text-align: center
            transition-duration: 0.25s
            transition-property: background-color, border-color, color
            white-space: nowrap
            span.icon
              get_main_sprite()
              background-position: 0 -429px
              display: inline-block
              height: 16px
              vertical-align: middle
              width: 16px
          a.more:hover
            background-color: #82c91a
            border-color: #7cc019

