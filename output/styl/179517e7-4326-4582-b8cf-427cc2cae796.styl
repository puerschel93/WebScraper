// 首页文章添加阴影效果
.post-block {
	// margin-top: 60px;
	margin-bottom: 80px;
	padding: 25px;
	box-shadow: 0 0 10px rgba(0, 0, 0, .4);
	//-webkit-box-shadow: 0 0 10px rgba(202, 203, 203, 10);
	//-moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}


// [Read More]按钮样式
.post-button .btn {
    border-radius: 5px;
}

// post-meta的上下间距
.posts-expand .post-meta {
    color: #999;
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
    // margin: 3px 0 60px 0;
    margin: 3px 0 20px 0;
    text-align: center;
}

// description 与上一栏的距离
.posts-expand .post-meta .post-description {
    font-size: 0.875em;
    // margin-top: 2px;
    margin-top: 4px;
}

// 阅读全文到卡片底部距离

.posts-expand .post-eof {
    display: none;
}

// 标题链接点击出现的下划线位置改变top值
.posts-expand .post-title-link::before {
    background-color: #000;
    bottom: 0;
    content: '';
    height: 2px;
    top: 38px;
    left: 0;
    position: absolute;
    transform: scaleX(0);
    visibility: hidden;
    width: 100%;
    transition-delay: 0s;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
}

// 鼠标放在发表于，更新于时间上防止出现 问号 样式
.posts-expand .post-meta time {
    border-bottom: 1px dashed #999;
    cursor: auto;
}

// 标题与头部间距
.posts-expand .post-title {
    overflow-wrap: break-word;
    word-wrap: break-word;
    font-weight: 400;
    margin-top: 30px;
    text-align: center;
}

