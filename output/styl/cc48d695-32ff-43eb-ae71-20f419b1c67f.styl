@media (min-width: 320px) and (max-width: 480px) {
	
	main {
		
		overflow: hidden
	}
	
	.wrapper {
		max-width: 91%
	}
	
	.mobile-none {
		display: none
	}
	
	.desktop-none {
		display: block;
	}
	
	.title {
		h1 {
			font-size: rem(30);
			line-height: rem(45);
		}
		
		h2 {
			font-size: rem(20);
			line-height: rem(30);
		}
		
		h3 {
			font-size: rem(20);
			line-height: rem(30);
		}
	}
	
	.btn-cart {
		position: fixed;
		right: 1rem;
		width: rem(70)
		height: rem(70)
	}
	
	.shopping-bag-svg {
		width: rem(35)
		height: rem(32)
	}
	
	.top-info {
		padding: 1.3rem 0 1.9rem;
		background: #1b1b1b url("../images/bg-1-mob.jpg") no-repeat;
		background-size: contain;
		
		&:after {
			display: none
		}
	}
	
	.top-info__title {
		p {
			font-size: rem(18);
			line-height: rem(27);
			margin-top: 0.6rem
		}
	}
	
	.top-info__item__wrap {
		width: 100%
		max-width: rem(360)
		margin: auto
		flex-direction: column-reverse
		justify-content: center
		align-items: center
	}
	
	.top-info__img {
		width: 6.93rem;
		margin: 1.8rem 0 0 7.1rem;
	}
	
	.top-info__item-1 {
		width: 100%
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	#timer-1 {
		margin: 0.25rem auto 0;
		justify-content: space-between
	}
	#timer-1, #timer-3, #timer-2 {
		width: rem(290);
		.countdown-item {
			margin: 0 rem(19) 0 0;
			width: rem(58);
			height: rem(58);
			p{
				font-size: 0.6rem
				margin-top: 1.1rem
			}
		}
		
		span {
			font-size: 1.99rem;
			margin-top: 1rem;
		}
		
		.countdown-svg {
			width: rem(58);
			height: rem(58);
		}
		
		path {
			stroke-width: 5px
		}
		
	}
	#timer-1 .countdown-item, #timer-2 .countdown-item, #timer-3 .countdown-item {
		margin: 0;
	}
	
	.top-info__price {
		margin: 3.2rem auto 0;
	}
	
	.old-price {
		font-size: rem(24);
		line-height: rem(36);
	}
	
	.new-price {
		font-size: rem(36);
		line-height: rem(54);
		margin-right: rem(11)
	}
	
	.btn_big {
		width: rem(200);
	}
	
	.btn_border-white {
		span {
			font-size: rem(30);
			line-height: rem(45)
		}
	}
	
	.top-info__sale {
		margin-top: 0.4rem;
		width: 100%
		
		p {
			margin-right: 3.1rem;
		}
		
		span {
			margin-right: 0rem;
		}
	}
	
	.sale {
		p {
			font-size: rem(24);
			line-height: 1
		}
		
		span {
			font-size: rem(16);
			line-height: 1
		}
	}
	
	.top-info__discount-btn {
		margin-top: -1.3rem
	}
	
	.our-pluses {
		background: #fff;
		padding: 3.6rem 0 3.5rem;
		position: relative;
	}
	
	.our-pluses__wrap {
		width: 100%
		max-width: rem(360)
		margin: auto
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.our-pluses__item {
		max-width: rem(235)
		min-height rem(235)
		padding: 0.9rem 0.5rem;
		margin-bottom: 4.4rem
		
		&:last-child {
			margin-bottom: 0
		}
	}
	
	.our-pluses__item-icon {
		width: rem(60)
		height: rem(60)
	}
	
	.our-pluses__item-txt {
		h3 {
			margin-top: rem(10)
		}
		
		p {
			font-size: rem(13);
			line-height: rem(19);
			margin-top: rem(5)
		}
	}
	
	.advantages {
		-webkit-background-size: cover
		background-size: cover
		padding: 1.9rem 0
	}
	
	.advantages__wrap {
		margin: 0.6rem auto 0;
		width: 100%
		max-width: rem(360)
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.advantages__column-left {
		padding-left: 0;
		width: 100%;
		max-width: 100%;
	}
	
	.advantages__item {
		height: rem(70)
	}
	
	.advantages__item-txt {
		width: 95%
		
		p {
			font-size: rem(14);
			line-height: rem(21);
		}
	}
	
	.advantages__item-icon {
		margin-right: 1.1rem;
		margin-left: 0.45rem;
	}
	
	.advantages__img {
		width: 4.83rem;
		margin: 0.9rem 0 0 0rem;
	}
	
	.advantages__column-right {
		padding-right: 0;
		width: 100%;
		max-width: 100%;
		
		.advantages__item {
			height: rem(100)
		}
	}
	
	.btn_270 {
		width: rem(200);
	}
	
	.btn_border-orange {
		span {
			font-size: rem(30);
			line-height: rem(45)
		}
	}
	
	.about-product {
		padding: 1.6em 0 2.35rem;
	}
	
	.about-product__title {
		p {
			font-size: rem(14);
			line-height: rem(21)
			margin-top: 0.98rem;
		}
	}
	
	.about-product__wrap {
		margin: 2.1rem auto 0;
		width: 100%
		max-width: rem(290)
		justify-content: space-between
		align-items: center
		flex-wrap: wrap
	}
	
	.about-product__item {
		width: rem(135)
		height: rem(135)
		margin: 0.5rem 0
		
		img {
			width: rem(97)
		}
	}
	
	.product {
		background-color: #2A2A2A;
		background-image: none
		padding: 1.9rem 0;
	}
	
	.product__item:after {
		display: none
	}
	
	.product__item {
		width: 100%;
		background: #2a2a2a;
		padding: 0;
		max-width: rem(360)
		flex-direction: column
		justify-content: center
		align-items: center
		margin: auto
	}
	
	.product__item-column {
		width: 100%;
		max-width: 100%;
		margin-left: 0;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
	}
	
	.product__img {
		position: absolute
		width: 6.83rem;
		margin: 0;
		top: 11.8rem;
		left: 1.2rem;
		pointer-events none
	}
	
	.product__title {
		
		h2 {
			font-size: rem(18);
			line-height: rem(27);
		}
	}
	
	#timer-2 {
		margin: 1.35rem auto 0;
		//transform: scale(0.95);
		//width: rem(290);
		justify-content: space-between;
	}
	
	.product__price {
		margin-right: 0;
		margin-top: 4.1rem;
		width: 100%;
	}
	
	.product__form {
		width: 100%;
		max-width: rem(290);
		margin: 10.2rem auto 0;
	}
	
	.order-form {
		input {
			padding: 0.52rem 1.18rem;
			font-size: rem(14);
			line-height: rem(21);
			margin-bottom: 0.9rem
			background: #2a2a2a
			position: relative
			&::placeholder {
				font-size: rem(14);
				line-height: rem(21);
			}
		}
		
		button {
			width: rem(200)
		}
	}
	
	.important-info {
		padding: 1.8rem 0 1.3rem;
	}
	
	.important-info .wrapper:before {
		display: none
	}
	
	.important-info__wrap {
		width: 100%;
		max-width: rem(360)
		flex-direction: column
		justify-content: center
		align-items: center
		margin: auto
	}
	
	.important-info__column {
		width: 100%;
	}
	
	.important-info__img {
		width: 18.38rem;
		margin: 1.9rem auto 0;
	}
	
	.important-info__item {
		padding: 1rem 0.2rem 1rem 0.9rem;
		margin-bottom: 1.2rem;
		margin-top: 1.2rem;
		
		&:last-child {
			margin-bottom: 0
		}
	}
	
	.important-info__item:before {
		left: 99.5%
	}
	
	.our-work {
		position: relative;
		padding: 1.7rem 0 1.8rem;
	}
	
	.our-work__wrap {
		width: 100%;
		max-width: rem(360)
		flex-direction: column
		justify-content: center
		align-items: center
		margin: 1.8rem auto 0;
	}
	
	.our-work__item {
		width: 100%;
		max-width: 100%;
		margin-bottom: 2.6rem;
		
		&:last-child {
			margin-bottom: 0
		}
	}
	
	.our-work__item-txt {
		margin-top: 1.29rem;
		
		p {
			margin-top: 0.23rem;
			font-size: rem(14);
			line-height: rem(21);
		}
	}
	
	.review {
		padding: 1.9rem 0 3.8rem;
	}
	
	.review .wrapper:before {
		display: none
	}
	
	.review__slider .swiper-container {
		padding: 1.7rem 0 0;
	}
	
	.review__item {
		width: 100% !important
		padding: 0.88rem 1rem 1.58rem 0.88rem
		flex-direction: column
		
		&:after {
			width: rem(57)
			height: rem(38)
			top: -1.3rem;
			right: 0.7rem;
		}
	}
	
	.review__item-column {
		width: 100%
	}
	
	.user-name {
		p {
			font-size: rem(18);
			line-height: rem(27);
			
		}
	}
	
	.review__item-rate {
		width: rem(75)
		margin-top: 0.3rem
		
		img {
			width: rem(15)
			height: rem(15)
		}
	}
	
	.review__item-txt {
		margin-top: 0.9rem;
		
		p {
			font-size: rem(14);
			line-height: rem(21);
		}
	}
	
	.review__button-prev {
		left: -0.9rem;
		top: 20.2rem;
	}
	
	.review__button-next {
		right: -0.9rem;
		top: 20.2rem;
	}
	
	.user-photo {
		width: rem(230)
		margin: 1rem auto 0;
	}
	
	.review__swiper-pagination {
		bottom: -2.3rem;
	}
	
	.bottom-info {
		padding: 1.8rem 0
		background: linear-gradient(to bottom, #1b1b1b 75%, #000 100%)
		&:before {
			background: url("../images/bg-5-mob.png") no-repeat
			background-size: cover
			width: rem(628)
			height: rem(950)
			top: 0.5rem
			left: auto
			right: 0
			z-index: 5
		}
		
	}
	
	.bottom-info__column {
		width: 100%;
		max-width: rem(360)
		flex-direction: column
		justify-content: center
		align-items: center
		margin: 0rem auto 0;
	}
	
	.bottom-info__title {
		text-align: center
		h1 {
			font-size: rem(18);
			line-height: rem(27);
		}
		
		p {
			display: none
		}
	}
	
	#timer-3 {
		margin: 0 auto;
		//transform: scale(0.7);
		//width: 26.18rem;
		justify-content: space-between;
		position: absolute;
		top: 0.1rem;
		//left: -3.9rem;
		
	}
	
	.bottom-info__item__wrap {
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.bottom-info__item-1 {
		width: 100%
		position: relative
		z-index: 10
	}
	
	.bottom-info__sale {
		margin: 6.7rem 0 0 7.6rem;
		
		p {
			font-size: rem(50);
		}
		
		span {
			font-size: rem(40);
			line-height: 1.1;
			margin: 0rem 0rem 0 2.9rem;
		}
	}
	
	.bottom-info__price {
		margin-top: 23.9rem;
		margin-right: 0rem;
		
		.old-price {
			font-size: rem(20);
		}
		
		.new-price {
			font-size: rem(40);
			margin: 0
		}
	}
	
	.bottom-info__form {
		margin: 1.5rem auto 0;
	}
	
	.bottom-info__img {
		width: 6.63rem;
		margin: 0;
		position: absolute;
		top: 19.9rem;
		right: 0.4rem;
	}
	
	.footer {
		padding: 1.2rem 0;
	}
	
	.footer__column {
		h3 {
			font-size: rem(12);
			line-height: rem(12);
			font-weight: 600
			text-align: center
		}
		
		&:last-child {
			padding-left: 0
		}
	}
	
	.footer__column-list {
		display: none
	}
	
	.policy-txt {
		display: none
	}
}

@media (min-width: 360px) and (max-width: 480px) {
	.top-info__sale {
		span {
			margin-right: -0.5rem;
		}
	}
	.order-form {
		input {
		}
		
		button {
			width: rem(270);
		}
	}
	#timer-2 {
		margin: 1.35rem auto 0;
	}
	#timer-3 {
		margin: 0rem auto 0;
		transform: translate(-70%, 0);
		left: 50%
	}
	.product__form {
		width: 100%;
		max-width: rem(320);
		margin: 10.2rem auto 0;
	}
	.btn_big {
		width: rem(255);
		height: rem(55);
	}
	.btn_270 {
		width: rem(270);
	}
	#timer-2 .countdown-item p {
		font-size: 0.7rem;
	}
	#timer-1 .countdown-item p, #timer-3 .countdown-item p {
		font-size: 1rem;
	}
}

@media (min-width: 410px) and (max-width: 480px) {
	.bottom-info__img {
		width: 9.63rem;
		top: 16.9rem;
		right: -1.6rem;
	}
	.bottom-info:before {
		top: 3.5rem;
	}
	
	#timer-2 .countdown-item p {
		font-size: 0.7rem;
	}
	#timer-1 .countdown-item p, #timer-3 .countdown-item p {
		font-size: 1rem;
	}
}