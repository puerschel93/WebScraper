.title
    padding: 24px 0
    font-size: 32px
    font-weight: bold

.library-info
    .at-list__item
        padding-left: 0
        
    .at-list__item-container
        align-items: flex-start

    .at-list__item .item-extra__info
        white-space: normal

    .at-list__item-content
        flex: none
        width: 160px

    .at-list__item-extra
        max-width: max-content
        text-align: left
        
    .at-list__item::after
        left: 0

.grid-list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between
    &-item
        display: flex
        justify-content: flex-start
        align-items: center
        flex: 0 0 50%
        height: 30vw
        box-sizing: border-box
        padding-left: 20px
        .content
            padding-left: 20px
            .number
                font-size: 40px

