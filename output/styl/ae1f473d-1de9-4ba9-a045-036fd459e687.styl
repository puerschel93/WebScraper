.catalog
    display flex
    flex-direction column

    @media screen and (max-width: 1200px)
        margin 25px
            

    &-content
        display flex

        @media screen and (max-width: 810px)
            flex-direction column

        .filters
            display flex
            flex-direction column
            max-width 220px
            margin-right 80px

            @media screen and (max-width: 810px)
                max-width 100%

            h1
                text-align left

            .title
                font-size 24px
                line-height 18px
                letter-spacing 0.2px
                color #1D1C1C

            .filter-title
                font-weight bold
                font-size 18px
                line-height 18px
                letter-spacing 0.2px
                color #CA6791
            
            .price-slider
                .ng5-slider
                    
                    .ng5-slider-pointer
                        width 15px
                        height 15px
                        background-color #569372 !important

            .categories
                display flex
                flex-direction column

                @media screen and (max-width: 810px)
                    flex-direction row
                    flex-wrap wrap
                .cat
                    border none
                    background-color transparent
                    display flex
                    align-items center
                    margin-bottom 28px

                    @media screen and (max-width: 810px)
                        min-width 150px
                        margin-right 15px

                    span
                        display flex
                        width 15px
                        height 15px
                        border 1px solid #569372
                        border-radius 50%
                        min-width 15px
                        margin-right 16px
                        transition 0.2s ease-in
                .active
                    span
                        background-color #569372

        .items
            display flex
            flex-direction column
            margin-top 25px

            .search
                margin-bottom 70px

                input 
                    border 1px solid #E290B2
                    border-radius 11px
                    box-shadow 0px 4px 10px rgba(0, 0, 0, 0.05)
                    padding 7px 20px 9px 20px
                .btn
                    padding 8px 20px 10px 20px
                    border-top-left-radius 0
                    border-bottom-left-radius 0
                    margin-left -30px

            .products
                display flex
                flex-wrap wrap

                @media screen and (max-width: 810px)
                    flex-direction column
                    align-items center

.pagination
    display flex
    margin 0 auto
    margin-top 40px
    .page
        background-color transparent
        color #99BEAA
        font-size 18px
        border none
        margin 15px
        &:last-of-type
            font-size 24px

    .active
        color #569372
        font-size 24px

    