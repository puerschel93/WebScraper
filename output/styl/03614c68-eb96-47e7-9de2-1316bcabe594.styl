@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'
@import '../../../styles/settings'
@import '../Button/index.styl'

margin-value = 10
text-normal-color=rgba(0, 0, 0, 0.66)
text-normal-light-color=rgba(0, 0, 0, 0.55)
active-trusted-icon-color=#94cfb3
active-err-icon-color=#f9ca60
active-dep-icon-color=#f06f6a
top-bg-color=#fff

.bottom-line
  padding rem-calc(margin-value) rem-calc(10)
  border-bottom solid 1px #eeeff2

.rsb-main-wrapper
  display inline-block
  width rem-calc(250)
  white-space normal
  height 100%
  position relative
  overflow hidden
  margin-top rem-calc(1)
  .asset-name
    @extend .bottom-line
    background-color top-bg-color
    position relative
    padding-right rem-calc(30)
    &:hover
      .asset-name-edit-icon
        display block
    h5
      color rgba(0, 0, 0, 0.7)
      font-weight 500
      font-size rem-calc(20)
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
  .social-btns
    @extend .bottom-line
    display flex
    flex-direction row
    justify-content space-between
    position relative
    background-color top-bg-color
    i
      margin-right rem-calc(5)
      font-size rem-calc(14)
    .animated-star
      animation star_animation 0.8s linear both
    .share
      outline none
      border 1px solid #ddd
  .favorite-status
    padding rem-calc(8) rem-calc(10)
    border-bottom solid 1px #eeeff2
    color rgba(90, 90, 90, 0.88)
    p
      font-size rem-calc(12)
      font-weight 400
      i
      span
        color color-graphiti-red
  .description
    @extend .bottom-line
    text-align flex-start
    justify-content flex-start
    font-size rem-calc(12)
    color text-normal-light-color
    font-weight 400
    position relative
    h5
      font-size rem-calc(11)
      color text-normal-color
      font-weight 400
      position relative
      margin-bottom rem-calc(5)
      &:hover
        .description-edit-icon
          display block
  .content
    @extend .bottom-line
    text-align flex-start
    justify-content flex-start
    >div
      margin-bottom rem-calc(10)
    >div:last-child
      margin-bottom 0
  .tags
    @extend .bottom-line
    display flex
    flex-direction row
    flex-wrap wrap
    align-items center
  .top-wrapper
    margin rem-calc(5) rem-calc(10)
  .discoverability
    @extends .bottom-line
    h5
      font-size rem-calc(11)
      color text-normal-color
      font-weight 400
      position relative
    .icon
      position absolute
      right 60px
      top 1px
    .progress-bar
      margin-top rem-calc(10)
  .endorsements
    @extend .bottom-line
    .container
      display flex
      flex-flow row
      justify-content center
      align-items center
      .endorsement
        flex 1
        display flex 
        flex-flow column
        justify-content center
        align-items center
        cursor pointer
        >h5
          font-size rem-calc(13)
          font-weight 400
        .endorsement-name
          font-size rem-calc(12)
          font-weight 500
          color rgba(0,0,0,0.45)
        .endorsement-number
          color text-normal-color
        >i
          color text-normal-light-color
          margin rem-calc(10) 0
          font-size rem-calc(24)
          cursor pointer
        .trusted-active
          color active-trusted-icon-color
        .err-active
          color active-err-icon-color
        .dep-active
          color active-dep-icon-color

.endorsement-image
  width rem-calc(24)
  height rem-calc(24)
  margin rem-calc(10) 0

.help-btns
  display flex

.privacy-wrapper
  position relative
  .privacy-list
    list-style none
    position absolute
    right 0
    .list-item
      display flex

.input
  outline none
  border 1px solid #e8e8e8
  padding rem-calc(8) rem-calc(5)
  font-size rem-calc(14)

.asset-name-input
  @extend .input
  border none
  width 100%
  color rgba(0, 0, 0, 0.7)
  font-weight 500
  font-size rem-calc(20)
  padding 0
  &::selection
    background-color color-graphiti-red
    color #fff

.icon
  cursor pointer
  display block
  position absolute
  top 0
  transition all 0.32s ease-in
  width rem-calc(15)
  height rem-calc(15)
  border-radius 50%
  line-height 1.2
  transition all 0.23s ease-in
  opacity 0.5
  margin-left rem-calc(5)
  i
    font-size rem-calc(8)
    margin-left rem-calc(3)
    color #333
  &:hover
    opacity 1

.asset-name-edit-icon
  @extend .icon
  right rem-calc(10)
  top 40%
  line-height 0.7
  display none
  i
    font-size rem-calc(12)

.description-edit-icon
  @extend .icon
  right rem-calc(135)
  top rem-calc(10)
  z-index 1
  
.description-save-icon
  @extend .icon
  right rem-calc(135)
  top rem-calc(10)
  z-index 1
  i
    font-size rem-calc(14)
  

.footer-btn
  position absolute
  bottom rem-calc(10)
  width 100%
  display flex
  justify-content center

