.model
	+above(980px)
		display flex
	
	&__switcher
		margin-bottom 40px
		
		+above(980px)
			width 33%
			flex-basis 33%
			flex-shrink 0
			padding-right 15px
			margin-bottom 0
		
	&__switcher-title
		margin-bottom 15px
		font-size 14px
		font-weight bold
		
	&__switcher-list
		font-size 13px
		
	&__switcher-model
		margin 5px 0
		font-weight bold
		color #787878
	
	&__switcher-model
		padding 5px 30px 5px 9px
		
	&__switcher-link
		padding 9px 30px 9px 9px
		display flex
		color inherit
		text-decoration inherit
		
		&_active
			background-color $colorDecorative

	&__switcher-desc
		position relative
		
		&:hover
			background-color $colorDecorative
			
	&__switcher-engine
		display inline-block
		width 86px
		color $colorSecondary
		
		+above(768px)
			width 22%
			
		^[0]__switcher-link_active &,
		^[0]__switcher-link:hover &
			color #000
		
	&__switcher-power
		display inline-block
		width 114px
		color #787878
		
		+above(768px)
			width 34%
		
		^[0]__switcher-link_active &,
		^[0]__switcher-link:hover &
			color #000
		
	&__switcher-transmission
		color #ababab
		
		^[0]__switcher-link_active &,
		^[0]__switcher-link:hover &
			color #000
		
	&__switcher-check
		position absolute
		top 50%
		right 5px
		display block
		margin-top -8px
		width 17px
		height 17px
		text-align center
		line-height 14px
		border 1px solid #000
		border-radius 50%
		
		^[0]__switcher-link_active &
			border-color $colorMain
		
		&::before
			position relative
			top 1px
			left 0
			content '+'
			
			+above(980px)
				left -1px
			
		^[0]__switcher-link_active &::before
			position absolute
			left 4px
			top 5px
			width 6px
			height 2px
			content ''
			border-left 1px solid $colorMain
			border-bottom 1px solid $colorMain
			transform rotate(-40deg)
			transform-origin 50% 50%

	&__body
		+above(980px)
			padding-left 15px
			flex-grow 1
		
	&__title
		margin-bottom 37px
		font-size 22px
		font-weight bold
		
	&__col
		+above(768px)
			width 50%
			flex-basis 50%
			padding-left 12px
		
		&:last-child
			+above(768px)
				padding-left 0
				padding-right 12px
				
		^[0]__about &:first-child
			+above(768px)
				width 60%
				flex-basis 60%
				
			+above(980px)
				width 50%
				flex-basis 50%

	&__about
		+above(768px)
			display flex
			margin-bottom 40px

	&__about-desc
		margin-bottom 7px
		font-size 12px
		
	&__figure
		display none
		position relative
		padding 12px 30px 18px
		height 113px
		font-size 12px
		color #900
		
		+above(768px)
			display block
		
	&__figure-height
		position absolute
		left -30px
		bottom 60px
		width 83px
		text-align center
		background url(../images/h.png) center center no-repeat
		transform rotate(-90deg)
		
	&__figure-width
		position absolute
		bottom 0
		left 30px
		width 289px
		text-align center
		background url(../images/w.png) center center no-repeat
		
	&__figure-clearance
		position absolute
		right 0
		bottom 46px
		width 57px
		text-align center
		background url(../images/cl.png) center center no-repeat
		transform rotate(-90deg)
		
	&__figure-body
		display inline-block
		
		&_1
			sprite $1
		
		&_2
			sprite $2
			
		&_3
			sprite $3
			
		&_4
			sprite $4
		
		&_5
			sprite $5
			
		&_6
			sprite $6
			
		&_7
			sprite $7
			
		&_8
			sprite $8
			
		&_9
			sprite $9
			
		&_10
			sprite $10
			
		&_11
			sprite $11
			
		&_12
			sprite $12

	&__feature-wrap
		display flex
		width 100%

	&__feature
		flex-basis 50%
		width 50%
	
	&__feature-row
		margin-bottom 18px
		
	&__feature-term
		margin-bottom 8px
		font-size 13px
		font-weight bold
		color #ababab
		
	&__feature-desc
		font-size 16px
		
	&__info
		+above(768px)
			display flex
			width 100%

	&__section 
		margin-bottom 25px
		
		&_box
			margin-bottom 0
			padding 18px 0 6px
			border-bottom 1px solid $colorDecorative
			
			&:last-child
				border-bottom none
		
	&__section-title
		margin-bottom 18px
		font-weight bold
		font-size 16px
		
	&__info-list
		font-size 13px
		
	&__info-row
		display flex
		margin-bottom 10px
		line-height 1.38462
		
	&__info-term
		padding-right 15px
		width 150px
		flex-basis 150px
		flex-shrink 0
		color #ababab
		
		+above(768px)
			width 190px
			flex-basis 190px
			
	&__package-title
		padding-bottom 14px
		font-size 22px
		border-bottom 2px solid $colorDecorative
		
	&__package-title-bold
		font-weight bold
		
	&__package-list
		font-size 13px
		line-height 1.38462
		color #787878
		
		+above(768px)
			display flex
			flex-wrap wrap
		
	&__package-item
		margin-bottom 13px
		
		+above(768px)
			padding-right 12px
			width 50%
			flex-basis 50%

		&:nth-child(even)
			+above(768px)
				padding-left 12px
				padding-right 0