.filters-section-wrapper
  +lg()
    display flex

.custom-row-flex + .custom-row-flex.bonuses-wrapper
  margin: 15px -15px
.custom-row-flex.bonuses-wrapper
    display flex
    justify-content flex-start !important

.filters-block
  box-shadow 0 0 20px rgba(0, 0, 0, 0.11)
  border-radius 5px
  background-color $color-white
  overflow hidden
  width 100%
  max-height 55px
  transition 0.3s
  +lg()
    max-height 9999px
    width 260px
    margin-right 30px
  &.is-open
    max-height 9999px
  &__
    &el
      box-shadow 0 2px 0 $grey-5
      margin-bottom 2px
      &--
        &header
          box-shadow unset
          .filters-block
            &__
              &el-title
                color $color-white
                background $color-mail
                font-size 20px
                text-transform uppercase
                margin-bottom 3px
                display none
                +lg()
                  display block
                &--
                  &mob
                    display flex
                    +lg()
                      display none
                  &mob-title 
                    width 100%
                    text-align center
                .hamburger
                  padding 0
                  margin-top 6px

              &el-title-arrow
                color $color-white

              

      &.is-active
        .filters-block
          &__
            &el-title
              background $light-blue
              color $color-white
            &el-title-arrow
              color $color-white
              transform rotate(-90deg)
            &el-body
              max-height 364px
              transition 0.3s
              padding 15px 10px
    &el-title
      height 55px
      background $color-white
      color $main-gray
      display flex
      align-items center
      justify-content space-between
      padding 10px
      font-size 17px
      font-weight 500
      transition 0.3s
      &--
        &caption
          cursor pointer
          &:hover
            background $light-blue
            color $color-white
            transition 0.3s
            .filters-block
              &__
                &el-title-arrow
                  color $color-white
    &el-title-arrow
      transform rotate(90deg)
      color $main-gray
      transition 0.3s
    &el-body
      transition 0.3s
      background-color $grey-opacity
      padding 0 10px
      overflow hidden
      max-height 0
    &el-search
      height 50px
      border-radius 5px
      background-color $grey-5
      padding 0 45px
      width 100%
      outline 0
      border 0
      font-size 16px
      font-weight 300
      color $main-gray
    &search-wrap
      position relative
      &:before
        @extend $icon
        position absolute
        display inline-block
        content $icon-search
        color $grey-6
        font-size 22px
        top 13px
        left 12px
      &:after
        @extend $icon
        position absolute
        display inline-block
        content $icon-arrow-2
        color $main-gray
        font-size 13px
        top 17px
        right 12px
    &category-item-checkbox
      display none
    &category-label
      position relative
      cursor pointer
      &:before
        content ''
        display block
        position absolute
        width 15px
        height 15px
        border-radius 3px
        border 1px solid $grey-5
        background-color $color-white
        top 4px
        left 0
      &:after
        display none
        @extend $icon
        position absolute
        content $icon-cheked-filters
        position absolute
        top 7px
        left 3px
        font-size 8px
        color $main-green
      &.is-checked
        &:after
          display block
    &category-item-name
      color $main-gray
      font-size 16px
      font-weight 400
      line-height 40px
      padding-left 20px
    &category-list
      max-height 270px
      overflow auto
      margin 10px 0
      &::-webkit-scrollbar-track
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
        border-radius: 4px
        background-color: #dcdcdd
      &::-webkit-scrollbar
        width: 3px
        background-color: #dcdcdd
      &::-webkit-scrollbar-thumb
        border-radius: 4px
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3)
        background-color: #4c4c4c
        position relative