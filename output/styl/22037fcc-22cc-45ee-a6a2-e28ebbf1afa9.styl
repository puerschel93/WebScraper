.search-view {
  background-color: $colors.white;
  padding-top:99px;
  .van-search {
    padding: 0;
    margin-right: 30px;
    margin-left: 38px;
    .van-search__action {
      font-size: 27px;
      font-family: Noto Sans S Chinese;
      font-weight: normal;
      color: $theme-txt-color2;
      padding-left: 35px;
      padding-right: 0; 
    }
  }
  .search-history-box {
    padding: 17px 39px 38px 34px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    .searh-history-text {      
      font-size: 22px;
      font-family: Noto Sans S Chinese;
      color: $theme-search-color1;
    }
    .searh-history-empty {
      display: flex;
      align-items: center;
      color: $theme-search-color2;     
      font-size: 19px;
      font-family: Noto Sans S Chinese;
      font-weight: 500;
      img {
        width: 37px;
        height: 37px; 
      }
    }
  }
  .search-details {
    padding: 0 11px 0 40px;
    .search-details-text {
      display: inline-block;
      padding: 9px 15px;
      background: $search-text-bg1;
      border-radius: 19px;   
      font-size: 22px;
      font-family: Noto Sans S Chinese;
      font-weight: 500;
      color: $theme-txt-color;
      margin-right: 29px;
      margin-bottom: 28px;
    }
  }
  .search-hot-title {
    margin: 53px 0 28px 39px;    
    font-size: 22px;
    font-family: Noto Sans S Chinese;
    font-weight: 500;
    color: $theme-search-color1;
  }
  .search-hot-box {
    :nth-child(-n+3) span {
      background:$search-hot-bg1;
      color: $theme-txt-white;
    }
    :nth-child(n+4) span{
      color: $search-hot-text1; 
      background:$search-hot-bg2;
    }
    .search-hot-text { 
      font-size: 22px;
      font-family: Noto Sans S Chinese;
      font-weight: 500;
      color: $theme-txt-color;
      display: inline-block;
      width: 50%;
      margin-bottom: 19px; 
      padding-left: 42px;
      box-sizing: border-box;
      span {
        width: 26px;
        height: 26px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 10px;
        font-size: 19px;
        font-family: Noto Sans S Chinese;
        font-weight: 500;
        text-align: center;
        line-height: 26px;
         
      }
    }
  }
  // 搜索中的样式
  .search-list-box {
    padding-top: 10px;
    .search-list-item {
      padding-left: 61px;
      height: 54px;
      border-bottom: 1px solid $search-hot-border1;
      line-height: 54px;
      font-size: 22px;
      font-family: Noto Sans S Chinese;
      font-weight: 500;
      color: $theme-txt-color;
      overflow:hidden; //超出的文本隐藏
      text-overflow:ellipsis; //溢出用省略号显示
      white-space:nowrap; //溢出不换行
    }
  }
  // 搜索完样式
  .search-tabs {
    margin-top: 19px;
    background: $search-end-bg1;
    //padding-left: 38px;
    .van-tabs__nav {
      background: $search-end-bg1;
    }
    .van-tab {
      padding: 0;
      margin-left: 45px;
      flex: none;
      font-size: 27px;
      color: $theme-txt-color1;
      text-align: center;
      font-family: Noto Sans S Chinese;
      justify-content: flex-start;
    }
    .van-tab--active {
      font-size: 38px !important;
      font-family: Noto Sans S Chinese;
      font-weight: 500;
    }
    .van-tabs__line {
      width: 19px;
      height: 8px;
      background: linear-gradient(82deg, #FF7835, #F09246);
      border-radius: 4px;
    }
    .cell-title {
      display: flex;
      align-items: center;
      justify-content: space-between; 
      font-size: 27px;
      color: $theme-txt-color1;  
      padding: 28px 24px 26px 28px
      margin-top: 13px;
    }
    .search-host-box {
      display: flex;
      padding-left: 74px;
      .search-host-item{
        display: flex;
        flex-direction: column;
        width: 122px; 
        align-items: center;
        margin-right: 50px;
        overflow: hidden;
        .search-host-logo{
          width: 91px;
          height: 91px;
        }
        .search-host-nickname {
          font-size: 23px;
          color: $theme-txt-color;
          margin-top: 15px; 
          width: 122px; 
          text-align: center;
          overflow:hidden; //超出的文本隐藏
          text-overflow:ellipsis; //溢出用省略号显示
          white-space:nowrap; //溢出不换行
        }
      }
    }
    .all-host-list{
      padding: 0 31px 0 44px;
      .all-host-item {
        padding-top: 56px;
        display: flex;
        align-items: center;
        .all-host-logo{
          width: 91px;
          height: 91px;
          margin-right: 27px;
        }
        .all-host-nickname {       
          font-size: 29px;
          color: $theme-txt-color;
          flex: 1;
          overflow:hidden; //超出的文本隐藏
          text-overflow:ellipsis; //溢出用省略号显示
          white-space:nowrap; //溢出不换行
        }
        .all-host-followers {
          margin-left: 27px;
          font-size: 18px;
          color: $search-hot-text2;
        }
      }
    }
  }
}