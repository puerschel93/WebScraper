* 
	padding: 0
	margin: 0
	-webkit-box-sizing: border-box 
	-moz-box-sizing: border-box
	box-sizing: border-box
	&:before
		box-sizing: border-box
	&:after
		box-sizing: border-box

html, body
	font-weight: 100
	font-family: Roboto
	background: #FFFFFF

a 
	text-decoration: none
	color: #fff

ul 
	list-style: none
	
hr
	color: #a9b9b9
	
.button 
	display: inline-block
	color: #fff
	margin-bottom: 0
	font-weight: normal
	text-align: center
	vertical-align: middle
	cursor: pointer
	background-image: none
	border: 1px solid transparent
	white-space: nowrap
	padding: 8px 12px
	font-size: 14px
	line-height: 1.42857143
	border-radius: 4px
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	
.button-grey
	background: #6A7E81
	&:hover
		background: #102629
		
.button-green
	background: #6FB048
	&:hover
		background: #2D821C
		
.button-large
	text-transform: uppercase
	padding: 9px 35px
	font-size: 14px
	border-radius: 1px
	color: #DAE6E6
		
.content
	width: 70%
	margin: 0 auto

.clearfix
	&:after
		content: " "
		display: table
		clear: both

.content:before, .content:after, .row:after, .row:before, .clear:before, .clear:after, header:before, header:after	
		content: " "
		display: table

.content:after, .row:after, .clear:after,  header:after		
		clear:both

