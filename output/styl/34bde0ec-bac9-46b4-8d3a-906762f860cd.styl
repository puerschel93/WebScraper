.wrapper
	background: #d2d2d2 url('street.jpg')
	color: #fff
	background-size: cover
	-webkit-background-size: cover
	-moz-background-size: cover
	height: 600px
	position: relative
	z-index: 1
.bg
	position: absolute
	width: 100%
	height: 100%
	background: #2E6869
	opacity: 0.55
	content: ''
	z-index: 2

.wrapper .content
	position: relative
	z-index: 10

	
.header-nav
	padding: 27px 0
	z-index: 10
	width: 90%
	margin: 0 auto
	color: #fff
	border-bottom: 1px solid #9E9E9E
	position: relative
	.logo-block
		float: left
		display: inline-block
	.logo
		text-transform: uppercase
		font-weight: 600
		letter-spacing: 1px
		float: left
		text-shadow: 0.1px 0.1px 0.2px black, 0.2px 0.3px 0.7px black
		border-right: 1px solid #9E9E9E
		padding-right: 25px
		line-height: 0.8
	p
		float: left
		line-height: 18px
		margin-left: 17px
		font-size: 12px
		letter-spacing: 0.1px
		font-weight: 700
		color: lightgrey
	
.nav
	float: right
	margin-top: -3px
	li 
		margin-left: 5px
		float: left
		a, #touch-menu
			display: block
			padding: 5px 15px
			font-size: 12px
			text-transform: uppercase
			color: #869A9E
			font-weight: 700
			&:hover
				color: #DAE6E6
.nav-button
	font-size: 11px
	padding: 5px 25px!important
	border-radius: 1px
	color: #DAE6E6!important
	
	
	
#touch-menu, .menu-logo
	display: none	

.logo h1
	font-size: 23px

	
.phone-icon
	background:url('phone-icon.png')
	background-size: cover
	float: left
	width: 20px
	height: 20px
	border: none
	cursor: pointer
	margin: -1px 5px 0px 0px

.active
	color: #DAE6E6 !important		

.site-header
	margin-top: 180px
	position: relative
	
.site-header 
	h1
		font-weight: 500
		margin-bottom: 15px
	p 
		font-weight: 300
		max-width: 600px
		color: #C7DEDE
		font-size: 17px
		margin-bottom: 15px
.center
	text-align: center
	
.intro-text
	max-width: 400px
	margin: 0 auto
	font-weight: 400
	margin-bottom: 50px

.main-content
	margin-top: 90px
	
	p 
		color: #A9B9B9
		font-size: 14px
		font-weight: 400
	
	h1,h2,h3,h4,h5,h6
		color: #426E6E
		margin-bottom: 15px
		font-weight: 400
		text-align: center
	h1
		font-weight: 300
		
	.features
		margin-bottom: 40px

@media screen and (max-width: 950px)
	.content
		width: 90%
		margin: 0 auto

@media screen and (max-width: 768px)
	.header-nav
		text-align: center
		padding: 27px 0px 15px 0px
		.logo-block
			float: none
			margin-bottom: 10px
	.nav
		display: none
		float: none
		max-width: 70%
		margin: 0 auto
		li
			margin-left: 1px
			a
				padding: 3px 7px
	.nav-button
		font-size: 11px
		padding: 5px 15px!important
		
	#touch-menu
		font-size: 20px
		color: lightgrey
		display: block
		float: left
		cursor: pointer

@media screen and (max-width: 550px)
	.nav
		li
			float: none
			width: 30%
			margin: 0 auto
