
brand_color = #088CBF
type_color = #222

transition_fast = 0.1s

border_radius = 2px




html, body
    margin 0
    height 100%

html, body, button, input, textarea
    font-family 'Open Sans', sans-serif
    color #222


h1
    text-align center

hr
    border none
    background rgba(0, 0, 0, 0)
    height 1px
    margin 32px 64px


.page,
.page__content
    height 100%


.field
    display block
    margin-bottom 8px

.field__input
    background white
    padding 8px
    font-size 16px
    border-radius border_radius
    width 100%
    box-shadow 0 1px 4px rgba(0, 0, 0, 0.2)
    border none
    box-sizing border-box

    &:focus
        outline none

.field__label
    font-size 12px
    margin-bottom 4px
    margin-top 16px



.field__button
    background brand_color
    color white
    display block
    margin auto
    width 100%
    padding 8px
    font-size 16px
    box-shadow 0 1px 4px rgba(0, 0, 0, 0.2)
    border none
    border-radius border_radius
    transition transition_fast
    cursor pointer

    &:active
        transform translateY(1px)
    
    &:focus
        outline none


.field--button-group
    display flex
    box-shadow 0 1px 4px rgba(0, 0, 0, 0.2)
    border-radius border_radius
    overflow hidden

    .field__button
        background white
        color type_color
        width 25%
        padding 8px
        font-size 12px
        box-shadow none
        border none
        border-right 1px solid rgba(0, 0, 0, 0.1)
        border-radius 0
        transition transition_fast

        svg
            display block

            path
                fill type_color

        &:first-of-type
            border-radius border_radius 0 0 2px
        
        &:last-of-type
            border-radius 0 2px 2px 0
            border-right none

        &:focus
            outline none

        &.field__button--selected
            background brand_color
            color white

            svg path
                fill white

.field--input-group
    display flex
    flex-wrap nowrap

    .field__input
        width 50%
    
        &:first-of-type
            margin-right 8px

.search-results__no-results
    text-align center

.search-results__item
    display flex
    box-shadow 0 1px 4px rgba(0, 0, 0, 0.2)
    border-radius border_radius
    cursor pointer
    transition transition_fast
    margin-bottom 8px
    height 150px

    &:hover
        box-shadow 0 2px 8px rgba(0, 0, 0, 0.2)

.search-results__item__picture
    background-size cover
    width 100%
    max-width 180px
    display block

.search-results__item__description
    padding 16px

.search-results__item__description__title
    margin-top 0

.search-results__item__description__price
    float left

.search-results__item__description__review
    float right

.icon
    margin auto
    width 24px
    vertical-align middle

.icon--star
    vertical-align -5px


@keyframes loader__bar__animation
    0%
        height 0%
    50%
        height 100%
    100%
        height 0%

.loader
    position relative
    margin auto
    width 16px
    height 16px

.loader__bar
    position absolute
    width 1px
    height 0
    animation 0.5s loader__bar__animation infinite
    background brand_color

.loader__bar:nth-of-type(1)
    left 0

.loader__bar:nth-of-type(2)
    left 50%
    transform translateX(-50%)

.loader__bar:nth-of-type(3)
    right 0

for num in (1..3)
    .loader__bar:nth-of-type({num})
        animation-delay (0.1s * num)


.profile
    display block

.profile__picture
    width 40px
    height 40px
    border-radius 50%
    background-size cover
    display inline-block

.profile__name
    display inline-block
    vertical-align 14px
    font-size 12px
    margin-left 8px

.detail
    position relative

.detail__close
    position absolute
    bottom 16px
    right 16px
    cursor pointer
    margin-bottom 0

.detail__picture
    margin -16px -16px 0 -16px
    height 400px
    width 400px
    background-repeat no-repeat
    background-size cover
    background-position center

.detail__price,
.detail__review
    margin 16px 0

.detail__price
    float left

.detail__review
    float right

.detail__reviews__item__text
    font-size 12px
    background whitesmoke
    padding 16px
    border-radius 8px




a
    color brand_color