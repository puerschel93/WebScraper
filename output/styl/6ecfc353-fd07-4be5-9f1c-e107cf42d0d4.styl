.slider-gallery
	margin-top: -70px
	width: auto//60%
	margin-left: 5%
	position: relative
	.slick-slide
		img 
			border 2px solid white
		&:hover
			img 
				border-color naranja
	.slick-list
		padding: 0 2rem
	.slick-arrow
		position:  absolute
		top 50%
		transform: translate(0,-50%)
		z-index: 99
		background: transparent
		border: none

	.slick-prev
		left 0
		&:after
			content: '\f060'
			font-family: 'FontAwesome'
			color red
			position: absolute

	.slick-next
		right 0 
		&:after
			content: '\f061'
			font-family: 'FontAwesome'
			color red
			position: absolute

	
@media screen and (min-width:768px)
	.slider-gallery
		width: 60%

