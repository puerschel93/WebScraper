.down-icon
  width 6px
  height 6px
  border 6px solid transparent
  border-top-color $red
  display inline-block
  transform translateX(-18px)
  margin-right -10px
  vertical-align: bottom

.icon-up
  width 6px
  height 6px
  border 6px solid transparent
  border-bottom-color $green
  display inline-block
  transform translateX(-18px)
  margin-right -10px

.is-gray
  color $gray!important

.dropdown-menu
  border-radius: 0!important
  min-width: auto!important
  a
    font-size 13px!important
    padding .25rem 3rem .25rem 1rem!important
    &:hover
      background: $blue
      color #f

.table-header-actions
  padding 0 8px 0 0
  &:not(:last-child)
    margin 0 10px 3px 0
  .text-secondary, .text-white
    margin 0 5px
    font-size 12px
    vertical-align middle
  .text-secondary:first-child
    margin 0 5px 0 0
  button
    margin 0 15px 0

.table-header-info
  font-size 14px