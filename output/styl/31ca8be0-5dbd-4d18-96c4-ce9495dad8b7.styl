.navigation-bar
  border-bottom 1px solid rgba($blue, .5)
  background $bg
  .row
    align-items flex-end


.d-logo
  display inline-block
  padding-bottom 10px
  img
    width 130px

.dashboard-menu
  display flex
  margin-bottom 0
  >li
    height 70px!important
    display flex
    flex-direction column
    &.dropdown > a
      background transparent!important
      box-shadow none!important
      border 0!important
      display flex!important
      font-size 14px!important
      color #f
      font-weight 300
      .icon
        position absolute
        right 0
        bottom 24px
    > a
      flex 1
      align-self bottom
      padding 0 22px 17px 22px
      display flex
      flex-direction column
      justify-content flex-end
      transition all 300ms
      &.active
        background rgba($blue, .1)
      &:hover span
        color $blue!important

      span
        font-size 14px
        color #f
        font-weight 300
        transition all 300ms


.nav-right
  ul
    display flex
    justify-content flex-end
    align-items flex-end
    li
      &:not(.user)
        margin-left 30px
    a
      color #f

    .user
      text-align center
      font-size 12px
      .icon
        margin-left 12px
      small
        font-size 10px
        margin-bottom -10px
        vertical-align super
      a
        display inline-block

.color-green
  color $green

.main-item-box
  background $dark
  width calc(100% + 15px)
  margin-bottom 10px

  header
    display flex
    align-items center
    justify-content space-between
    padding-left 10px
    border-bottom 1px solid #F2F2F2

    h3
      color #f
      font-weight 300
      font-size 16px
      padding 10px 0
      &.bordered-title
        padding-right 25px
        margin-right 20px
        border-right 1px solid rgba(#f, .12)
      span
        opacity .5
        margin-left 10px
        display inline-block

ul.box-list-items
  display flex
  align-items center
  margin 0
  &.no-borders
    li
      border 0!important
  li
    border-right 1px solid rgba(#f, .12)
    display flex
    padding 0 8px
    align-items center

    &.bold-text
      font-size 10px
      font-weight: 600
      color $gray
      display flex
      align-items: flex-end
      .light
        font-weight: 300

    &.multiple-links
      &.more-padding a
        padding 11px 12px!important
      a
        font-weight 600
        border-bottom 1px solid rgba(#f, .5)
        color rgba(#f, .5)
        padding 11px 5px
        &.active
          color #EA5607
          border-color #EA5607

    a
      font-size 10px

    &:last-child
      border-right 0


.default-dropdown-item
  > a
    color $gray!important
    font-size 12px
    font-weight 400
    &.is-green
      color $blue!important
    .icon
      margin-left 8px

&.is-scrolled
  overflow-y auto

  &::-webkit-scrollbar {
      width: 3px;
      background: rgba(#f, .25)
  }

  &::-webkit-scrollbar-thumb {
      background: rgba(#f, .25)
  }

.default-table
  width 100%
  padding 14px 7px
  line-height 1!important

  &.p-0
    tbody
      td
        padding 8px 10px!important
    thead
      td
        padding 12px 0 12px 8px!important

  table
    width 100%

    &.is-striped
     
    td
      vertical-align middle

    thead
      td
        color $gray
        font-size 11px
        font-weight 600
        padding-bottom 5px

    tbody
      tr
        td:first-child
          padding-left 5px
        td:last-child
          padding-right 5px
      tr.active
        background #F9F9F9
        td
          color $blue
      tr.disabled
        opacity: .3
        button
          opacity 0
          pointer-events none
      td
        padding 7px 0 5px 0
        color #f
        font-size 11px
        font-weight 600
        &.larger
          font-size 16px
          font-weight 400
          &:first-of-type
            width 60%
          small
            font-size 10px
            margin-left 5px
        &.is-red
          color $red
        &.is-green
          color $green
  &.deposit-withdrawals-table, &.orders-history-table
    table
      thead td
        padding-bottom 12px
      tbody td
        line-height 14px
        font-size 10px
      tbody tr.active td
        color white

.dashboard-footer
  background $bg
  border-top: 1px solid rgba(28,185,187,0.5);
  padding: 6px 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  .container-fluid
    display flex
    justify-content: space-between
    align-items: center
  p
    color #f
    font-weight 300
    font-size 10px
    margin 0
  ul
    display flex
    margin-bottom 0
    li:not(first-child)
      margin-left 15px
    a
      font-size 12px
      color #f
      font-weight 300
      transition all 300ms
      &:hover
        color $blue


.dashboard-input
  margin-bottom 10px
  position: relative
  .row
    flex-wrap nowrap
  .btn
    flex-basis 100%

  .item-area
    position: absolute
    right -12px
    top 3px
    display flex
    align-items: center
    small
      font-size 14px
      margin-bottom 0
      margin-right 10px

    .buttons
      display flex
      flex-direction: column
      &.green a
        background: white
      &.red a
        background: rgba($red, .1)
      a
        width 15px
        height 14px
        display inline-flex
        justify-content: center
        align-items: center
        margin-bottom 1px
        &:first-child span
          transform rotate(-180deg)

  .title
    font-size 12px
    font-weight 400
    color $gray

  input
    height 35px
    color #f
    font-size 14px
    font-weight 600
    box-shadow 0 1px 0 $gray
    appearance none!important
    transition all 300ms
    padding-right 77px
    background transparent
   
   
    &.is-blue
      background rgba($bluish, .1)

  &.without-item-area input
    padding-right 0

  &.small input
    height 28px
    font-size 12px

  &.big
    input
      height 50px
    .item-area
      top 50%
      transform translateY(-50%)

ul.inner-list
  display flex
  justify-content: flex-end
  margin-top 5px
  margin-bottom 5px
  margin-right -15px
  &.red
    a.active
      color $red!important
  li
    margin-left 13px
  a
    font-size 12px
    text-decoration underline!important
    &.active
      color $blue

.main-item-box
  h4
    color #f
    font-size 20px
    font-weight 300
    width 100%
    .icon
      margin-right 15px
      vertical-align: bottom
    small
      text-align: right
      font-size 10px
      opacity .5
      float right

.info-text
  margin-top 15px
  display block
  font-size 14px
  font-weight 600
  color #f
  small
    color $gray
    font-size 12px
    margin-right 10px

  &.green
    color: $green
  &.red
    color: $red
  b
    font-size 9px
    display block
    color: $gray


.icon-triangle-up.is-rotated
  transform: rotate(180deg)

.icon-triangle-down.is-rotated
  transform: rotate(180deg)

