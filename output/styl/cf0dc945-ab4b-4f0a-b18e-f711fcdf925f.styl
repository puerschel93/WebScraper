/* Starts:(Zensar Team) For Color hover */
#colors-container
	min-width: 25px
	max-width: 150px
	float: left
	overflow: hidden
	display: inline-block
	position: relative
	height: 20px

.m-propduct-card-colors
	position: absolute
	top: 0
	left: 0

#colors-container ul
	transition: left 0.75s linear

.scroll-left #colors-container ul
	left: -50%

