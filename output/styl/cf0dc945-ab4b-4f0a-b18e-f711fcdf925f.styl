.item
		display: flex
		justify-content: center

.owl-item .m-card .a-card-description
		width: 100%
.o-clp-mainContent
	.m-banner .m-figure, .o-blp-banner .m-banner .m-figure
		margin 0px
		display: flex
		justify-content: center
		align-items: center
.m-card
		transition: all 200ms linear
		box-shadow: $b-shadow-card
		color: $carbon
		border: none
		border-radius: 0
		padding: 16px 16px 10px 16px
		&:hover
				box-shadow: 0 2px 15px 1px rgba(0,0,0,0.3)
		.card-img-top
				width: 100%
				border-radius: 0
				padding: 0
		.card-body
				padding: 16px 0
		.a-card
				&-description
						padding: 0
						margin: 0
						font: $body2
						line-height: 1.3
						color: $carbon
						text-align: left
						overflow: hidden
						text-overflow: ellipsis
						-webkit-line-clamp: 2
						display: -webkit-box
						/* autoprefixer: off */
						-webkit-box-orient: vertical
						height: auto
						width: 100%
						/* autoprefixer: on */
						@media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
								white-space: nowrap
								overflow: hidden
								text-overflow: ellipsis
								white-space: nowrap
								width: 100%
						@media screen and (max-width: 450px)
								font: $overline-footer
						& + .a-card-price
							margin-top: 13px
						& + .a-card-discount
							margin-top: 28px
				&-price
				&-discount
						margin: 0
						sup
								margin-left: 1px /* 19726 fix */
				&-price
						font: $caption
						color: $gray
						text-decoration: line-through
						line-height: 1.3
						sup
								font-size: 0.500em
								top -.7em
				&-discount
						font: $body1
						color: $red
						sup
								font-size: 0.625em
                &-siva-price
						font: $caption
						margin-top: 13px
						color: $lead
						text-decoration: line-through
						line-height: 1.3
						sup
								font-size: 0.500em
								top -.7em
				&-siva-discount
						font: $body1
						color: $lead
						sup
								font-size: 0.625em

