		font-size .875em
		overflow: hidden
		text-overflow: ellipsis
		-webkit-line-clamp: 2
		display: -webkit-box
		.o-listing__products
		//     column-count 2
				column-gap 8px
		.m-plp-card-container
				.card-columns
						.card
								display inline-block
								margin-bottom .5rem
								max-height initial
								.m-ratings
										display block

	   .m-plp-card-container .card-title.a-card-siva-description
		font-size .875em
		font: $carbon
		overflow: hidden
		text-overflow: ellipsis
		-webkit-line-clamp: 2
		display: -webkit-box
		.o-listing__products
		//     column-count 2
				column-gap 8px
		.m-plp-card-container
				.card-columns
						.card
								display inline-block
								margin-bottom .5rem
								max-height initial
								.m-ratings
										display block
		.m-plp-list-view
				.a-plp-image-list-view
						vertical-align top
				.m-card
						.card-body
								padding 0
				.a-card-description
						font-size .875em
		.a-plus__icon
				height 16px
				line-height 1
				margin-left 1px
				padding 1px 4px
				width 16px
		.carousel-card
				display none!important
		.plp-imgProduct
				display inline-block!important
	.m-plp-flag-container .a-flag:not(:first-child)
		display block
		.card-columns-plp .m-ratings li
				border none
		.card-columns
				.card
						max-height initial
		.m-compare__products
				display none

@media (min-width: 992px)
	.m-plp-card-container:hover
		.a-plp-product-info
			.card-title.a-card-description
				overflow: visible;
				height auto;
				-webkit-line-clamp: unset;
			.m-plp-flag-container .a-flag:not(:first-child)
