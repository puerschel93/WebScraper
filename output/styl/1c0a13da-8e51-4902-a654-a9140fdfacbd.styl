                         linear-gradient(-30deg, darkgreen 40%, transparent 40%),
                         linear-gradient(110deg, white 50%, transparent 50%),
                         linear-gradient(120deg, transparent 45%,
                                                 darkgreen   45%, darkgreen 57%,
                                                 transparent 57%),
                         linear-gradient( 55deg, transparent 35%, darkgreen   35%, // top right
                                                 darkgreen   50%, transparent 50%),
                         linear-gradient(-45deg, transparent 30%, darkgreen   30%,
                                                 darkgreen   50%, transparent 50%),
                         linear-gradient(-30deg, white       40%, transparent 40%),
                         linear-gradient(-45deg, transparent 30%, darkgreen   30%,
                                                 darkgreen   50%, transparent 50%),
                         linear-gradient( 50deg, transparent 40%, white 40%),
                         linear-gradient( 60deg, transparent 40%, darkgreen   40%,
                                                 darkgreen   60%, transparent 60%),
                         linear-gradient(-22deg, transparent 20%, darkgreen   20%,  // middle left
                                                 darkgreen   45%, transparent 45%),
                         linear-gradient(-20deg, transparent 20%, darkgreen   20%,
                                                 darkgreen   45%, transparent 45%),
                         radial-gradient(circle at bottom left, transparent 50%, white 50%),
                         linear-gradient(-16deg, transparent 10%, darkgreen   10%,
                                                 darkgreen   35%, transparent 35%),
                         linear-gradient(110deg, transparent 25%, darkgreen   25%,
                                                 darkgreen   50%, transparent 50%),
                         linear-gradient( 60deg, white       50%, transparent 50%),
                         linear-gradient( 45deg, darkgreen   60%, transparent 60%),
                         linear-gradient( 90deg, darkgreen, darkgreen), // middle right
                         linear-gradient(100deg, transparent 10%, darkgreen   10%,
