/*-----------------------------

Dragon

-----------------------------*/

#dragon
  background: forestgreen

  // red dragon
  div
    width: 120px
    height: 160px
    margin-left: -(@width/2)
    margin-top: -(@height/2 + 20)
    background-color: white
    background-repeat: no-repeat
    background-image: linear-gradient( 75deg, white 50%, transparent 50%),
                      linear-gradient(-30deg, white 40%, transparent 40%),
                      linear-gradient( 30deg, firebrick   50%, transparent 50%),
                      linear-gradient(-20deg, transparent 30%,
                                              firebrick   30%, firebrick 53%,
                                              transparent 53%),
                      linear-gradient( 20deg, transparent 30%, white 30%),
                      linear-gradient( 68deg, transparent 30%,
                                              firebrick   30%, firebrick 70%,
                                              transparent 70%),
                      linear-gradient(-10deg, transparent 30%,
                                              firebrick   30%, firebrick 53%,
                                              transparent 53%),
                      radial-gradient(circle at bottom left, transparent 50%, white 50%),
                      linear-gradient(-10deg, transparent 30%,
                                              firebrick   30%, firebrick 53%,
                                              transparent 53%),
                      linear-gradient(110deg, white 50%, transparent 50%),
                      linear-gradient(-60deg, transparent 30%,
                                              firebrick   30%, firebrick 70%,
                                              transparent 70%),
                      linear-gradient( 80deg, white 50%, transparent 50%),
                      linear-gradient(-85deg, white 50%, transparent 50%),
                      linear-gradient(to right, firebrick, firebrick)
    background-size: 20px 20px,
                     20px 20px,
                     20px 20px,
                     25px 20px,
                     10px 10px,
                     16px 30px,
                     25px 20px,
                     15px 15px,
                     32px 20px,
                     10px 15px,
                     16px 30px,
                     20px 40px,
                     20px 40px,
                     10px 100px
    background-position: 42% 15%,
                         65% 16%,
                         50% 15%,
                         42% 31%,
                         32% 30%,
                         34% 40%,
                         51% 44%,
                         75% 29%,
                         64% 28%,
                         64.5% 38%,
                         70% 37%,
                         46% 81%,
                         53% 81%,
                         50% 56%
    border-radius: 7px
    box-shadow: 0 15px 5px black(.05),
                0 30px 0 #eee,
                0 35px 5px black(.05),
                0 40px 0 mediumspringgreen,
                0 45px 0 black(.1)

    @media (max-width: 450px)
      -webkit-transform: scale(.7)
      transform: scale(.7)

    &:before,
    &:after
      width: 120px
      height: 160px
      background-color: white
      background-repeat: no-repeat
      border-radius: 7px
      box-shadow: 0 15px 5px black(.05),
                  0 30px 0 #eee,
                  0 35px 5px black(.05),
                  0 40px 0 mediumspringgreen,
                  0 45px 0 black(.1)

    // white dragon
    &:before
      left: -140px
      background-image: linear-gradient(to right,  midnightblue  7%, transparent   7%,
                                                   transparent  93%, midnightblue 93%),
                        linear-gradient(to bottom, midnightblue  5%, transparent   5%,
                                                   transparent  95%, midnightblue 95%),
                        linear-gradient(to right,  midnightblue  7%, transparent   7%,
                                                   transparent  93%, midnightblue 93%),
                        linear-gradient(to bottom, midnightblue  5%, transparent   5%,
                                                   transparent  95%, midnightblue 95%),
                        linear-gradient(-45deg, transparent  10%,
                                                midnightblue 10%, midnightblue 13%,
                                                transparent  13%, transparent  87%,
                                                midnightblue 87%, midnightblue 90%,
                                                transparent  90%),
                        linear-gradient( 45deg, transparent  10%,
                                                midnightblue 10%, midnightblue 13%,
                                                transparent  13%, transparent  87%,
                                                midnightblue 87%, midnightblue 90%,
                                                transparent  90%)
      background-size: 70% 75%,
                       70% 75%,
                       52% 62%,
                       52% 62%,
                       52% 62%,
                       52% 62%
      background-position: center center

    // green dragon
    &:after
      right: -140px
