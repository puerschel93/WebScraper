@import "../../assets/mixins/index.styl"

li{
  padding:10px 0;
}

.bottom-bar {
  pos(fixed, 99);
  loc(null, null, 0, 0);
  w 100%;

  .purchase-btn,
  .purchasegroup-btn {
    pos(relative)
    width: 100%;
    background: linear-gradient(180deg, rgba(255, 143, 43, 1) 0%, rgba(255, 101, 34, 1) 100%);
    height: 100px;
    line-height: 100px;
    font-size: 32px;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    border: 0;
    overflow:hidden;

    span {
      pos(relative,9)
    }

    strong {
      font-size: 40px;
      font-family: PingFangSC-Semibold;
      font-weight: 600;
    }

    .effect{
      pos(absolute, 0)
      dwh block, 100%, 200%
      border-radius: 50%;
      background-color: #FFD8B6;
      opacity:1;
      transform: scale(0, 0) translate(-50%,-50%)
      transform-origin: top left;
    }

    .enter-active {
      transition-property:transform,opacity;
      transition-duration:.5s;
      transition-timing-function:ease-in-out;
      opacity: 0;
      transform: scale(1, 1) translate(-50%,-50%)
    }
  }

  .purchase-btn {
    //border-right:4px solid rgba(255,185,84,1);
    background: rgba(255, 255, 255, 1);
    color: rgba(0, 0, 0, 0.5);
    font-size: 28px;

    .yuanjia {
      pos(absolute)
      loc(-35px, null, null, 0)
      font-size: 24px;
      font-family: PingFangSC-Semibold;
      font-weight: 600;
      line-height: 34px;
      font-weight: lighter;
      text-decoration: line-through;
      font-style: normal;
    }
  }
}


