@import "./static/css/mixin.styl"

/* 字体颜色 */
.c-fff
  color #FFFFFF;
.c-333
  color #333333;
.c-666
  color #666666;
.c-999
  color #999999;
.c-red
  color #FE322B;
.c-FF0
  color #FF000D;

/* 边框 下划线 */
.borderB
  position relative
  &:after
    content ''; size(100%, 2px); background-color #F5F5F5; abBL(0, 0); transform scaleY(.5);
.borderT
  position relative
  &:before
    content ''; size(100%, 2px); background-color #F5F5F5; abTL(0, 0); transform scaleY(.5);
.borderR
  position relative
  &:after
    content ''; size(2px, 100%); background-color #F5F5F5; abTR(0, 0); transform scaleX(.5);
.hr
  height 2px; background-color #F5F5F5; transform scaleY(.5);
.hr8
  height 8px; background-color #F5F5F5;

/* 按钮 */
.c-btn
  size(100%, 40px); background-color #FE322B; border-radius 30px; font-size 14px; line-height 40px; color #FFFFFF; position relative; overflow visible; font-weight bold;
  &-disabled
    opacity .5; background-color #FE322B; color #FFFFFF;
.c-btn-primary
  background-color #07C160
.c-btn-border
  background-color #FFFFFF; color #FE322B;
  &:after
    content ''; size(200%, 200%); border 1PX solid #FE322B; border-radius 40px; transform scale(.5); transform-origin 0 0; abTL(0, 0);
.c-btn-border2
  background-color #FFFFFF; color #333333;
  &:after
    content ''; size(200%, 200%); border 1PX solid #999999; border-radius 40px; transform scale(.5); transform-origin 0 0; abTL(0, 0);
.c-btn-20
  height 20px; line-height 20px; font-size 12px; font-weight normal;
.c-btn-24
  height 24px; line-height 24px; font-size 12px; font-weight normal;
.c-btn-32
  height 32px; line-height 32px; font-size 14px; font-weight normal;

.btn-cart
  size(24px, 24px); position relative; overflow visible;
  image
    width 100%; display block;
  view
    size(14px, 14px); background-color #FE322B; border-radius 50%; font-size 10px; color #FFFFFF; center(); abTR(-2px, -6px)
.c-btn-group
  border-radius 20px; overflow hidden; acenter()
  .c-btn
    border-radius 0;
.btn-del
  width 70px; height 100%; background-color #FE322B; center(); color #FFFFFF; position relative; z-index 10;

/* 标签 */
.c-tag
  height 14px; line-height 14px; padding 0 4px; text-align center; border-radius 2px; background-color #FEF2E8; font-size 10px; color #FE322B; display inline-block;
.c-tag-red
  background-color #FE322B; color #FFFFFF
.c-tag-yel
  background-color #FC7F1B; color #FFFFFF
.c-tag-brown
  background-color #333333; color #FFFFFF
.c-tag-border
  font-size 10px; color #FE322B; border 1PX solid #FE322B; height 20px; line-height 18px; border-radius 4px; padding 0 6px;

/* 红点数字 */
.dot-num
  size(auto, 14px); min-width 14px; background-color #FE322B; border-radius 50%; font-size 10px; color #FFFFFF; center();
.dot-num-small
  size(8px, 8px); min-width 8px;

/* 价格 */
.price
  font-size 12px; color #FE322B;
  text
    font-size 18px;

/* 优惠券 */
.c-coupon-item
  height 72px; acenter(); position relative;
  &>view
    border 1PX solid #FE322B; background-color #FBEFEF; color #FE322B;
  .price
    size(28%, 100%); font-size 18px; center(); align-items baseline; border-right none; border-radius 4px 0 0 4px; position relative; padding-top 10px;
    &:before
      content ''; size(6px, 6px); border-bottom 1PX solid #FE322B; border-left 1PX solid #FE322B; border-top 1PX solid #FFFFFF; border-right 1PX solid #FFFFFF; border-radius 50%; background-color #FFFFFF; abTR(-5px, -4px); transform rotateZ(-45deg);
    &:after
      content ''; size(6px, 6px); border-top 1PX solid #FE322B; border-right 1PX solid #FE322B; border-bottom 1PX solid #FFFFFF; border-left 1PX solid #FFFFFF; border-radius 50%; background-color #FFFFFF; abBR(-5px, -4px); transform rotateZ(-45deg);
    text
      font-size 36px;
  .content
    size(72%, 100%); border-radius 0 4px 4px 0;
    .c-btn
      size(80px, 30px); line-height 30px;
  .icon
    size(46px, 46px); abTR(0, 0)
.c-coupon-item-disabled
  &>view
    border-color transparent
  .price
    background-color #D5D5D5; color #FFFFFF;
    &:before
      border-color #FFFFFF
    &:after
      border-color #FFFFFF
  .content
    background-color #F5F5F5; color #999999;

/* container */
.container
  padding-bottom calc(100px + constant(safe-area-inset-bottom));
  padding-bottom calc(100px + env(safe-area-inset-bottom));
.footer-container
  padding 7px 0; display flex; align-items center; width 100%; position fixed; left 0; bottom 0; background-color #FFFFFF; z-index 200; box-shadow: 2px 0px 4px 0px #E5E5E5;
  padding-bottom calc(7px + constant(safe-area-inset-bottom));
  padding-bottom calc(7px + env(safe-area-inset-bottom));
.section
  margin 8px 12px; background-color #FFFFFF; border-radius 4px; padding 0 8px; overflow hidden; position relative;
.section2
  margin 8px 0; background-color #FFFFFF; padding 0 12px; overflow hidden; position relative;
.hint-box
  background-color #F5F5F5; border-radius 4px; padding 8px;

/* 产品模块 */
.goods-list
  margin-left 12px; margin-right 12px; between(); flex-wrap wrap;
  .goods-item
    margin-bottom 8px;
.goods-item
  size(170px, 270px); background-color #FFFFFF; border-radius 4px; overflow hidden;
  .img
    size(170px, 170px); display block;
  .info
    padding 8px;
    .h3
      height 40px; line-height 20px; overflow hidden; text-overflow ellipsis; display -webkit-box; -webkit-line-clamp 2; -webkit-box-orient vertical;
      .c-tag
        vertical-align 2px;
    .price
      font-size 10px; line-height 20px; color #FE322B;
    .tag1
      font-size 10px; color #999999; line-height 16px; height 16px; padding 0 4px; background-color #F5F5F5; border-radius 8px 0 0 8px; margin-right -8px;
.goods-item-hor
  display flex; padding 8px 12px; background-color #FFFFFF;
  .img
    size(100px, 100px); margin-right 8px; border-radius 4px;
  .img85
    size(85px, 85px)
  .infos
    width 243px; flex 1 0 0;
    .title
      ellipsis()
    .company
      max-width 108px; display inline-block; ellipsis(); font-size 12px; color #999999; margin-left 4px; margin-right 4px;

/* 空提示 */
.empty
  text-align center
  .img
    width 60px; margin-bottom 4px;
  .txt
    font-size 12px; color #D5D5D5; margin-bottom 24px;
  button
    width 120px;
.empty-txt
  font-size 10px; color #999999; text-align center; margin 24px 0;

/* 支付方式 */
.pay-item
  height 32px; between(); font-size 12px;
  .icon
    width 16px;

/* 店铺信息行 */
.store-info
  acenter();
  image
    size(20px, 20px); border-radius 50%;
  text
    margin-left 4px;

/* 图片列表 */
.img-list
  display flex; flex-wrap wrap;
  .img-item
    size(60px, 60px); border-radius 4px; background-color #F5F5F5; margin 0 8px 8px 0; overflow hidden;
    image
      size(100%, 100%); border-radius 4px;
.avatar
  size(40px, 40px); border-radius 50%;
.avatar20
  size(20px, 20px); border-radius 50%;
.store-logo
  size(48px, 48px); border-radius 50%; margin-right 8px;
.none-inp
  background-color transparent; border none; outline none; -webkit-tap-highlight-color rgba(0, 0, 0, 0)
