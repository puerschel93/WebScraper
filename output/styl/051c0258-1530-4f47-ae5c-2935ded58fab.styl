@keyframes spin {
	0% {
		transform rotate(0deg)
		
	}
	100% { 
		transform rotate(360deg)
	}
}

.loader
	position relative
	z-index 2000
	color #444
	display table
	text-align center
	left calc(50% - 154px)
	top calc(50% - 154px)
	font-size 110%
	
	span
		display table-cell
		vertical-align middle
		font-size 4em
		animation spin 3s infinite linear
	label
		display table-cell
		vertical-align middle
		padding-left 0.2em
		font-size 2em
		font-weight normal

loadingTextWidth = 5em
#loadingText
	height loadingTextWidth
	width loadingTextWidth
	line-height loadingTextWidth
	left -(loadingTextWidth/2)
	top -(loadingTextWidth/2)
	position absolute
	border-radius 100%
	text-align center
	font-weight bold 

.popup-divider
	border-top 1px dotted #aaa
	margin 1.5em 0
	width calc(100% + 40px)
	left -20px
	position relative

.esri-attribution-logo
	// Override for the interfering logo coming as a bonus with ESRI layers
	// Note! Remember to give correct attribution in the layer instead (Â© ESRI)
	display none


// -- Image load indicator --
@keyframes circulate
	from
		transform rotate(0)
	to
		transform rotate(360deg)

.img-load-indicator
	// height 10em
	display block
	position relative
	height 200px
	// text-align center
	i
		font-size 4em
		display block
		position absolute
		bottom 30%
		vertical-align middle
		animation-name circulate
		animation-duration 1s
		animation-iteration-count infinite
		animation-timing-function linear
		
	

.img-smooth-loading
	opacity 0
.img-fade-in
	transition all 0.5s
	opacity 1
// -- End --

