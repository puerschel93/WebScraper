fontsize = 16px
h1fontsize = 6vw
pad = 3vw

html, body, table
  font-family: 'Raleway', sans-serif;
  margin: 0 !important
  padding: 0 !important
  font-size: fontsize
  background-color: transparent

h1
  font-size: h1fontsize
  margin: 0
  padding: 0

a
  color: darken(yellowgreen, 20%)
  text-decoration: none

div.top
  display: flex
  width: 100%
  height: 100vh
  div
    width: 100%
    height: 100vh
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    text-align: center
    background-image: url("./img/house.jpg")
    background-repeat: no-repeat
    background-position: center center
    background-size: cover
    background-attachment: fixed
    color: rgba(white, 0.7)
    p
      margin 1em
      padding 0
      font-size h1fontsize * 0.5

body.ios
  div.top
    div
      background-attachment: local

div.twitter
  display: flex
  justify-content: center
  width: 100%
  div
    padding: pad pad*2
    width: 30em
    max-width: 1200px
    height: 80vh

div.niconico
  display: flex
  justify-content: center
  width: 100%
  div
    padding: pad
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: center
    iframe
      margin: 5px

div.github
  margin: 1em 0
  padding: 2em 0
  display: flex
  justify-content: center
  flex-direction: column
  width: 100%
  background-color: black
  div.code
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    pre
      margin: 0
      padding: 0
      font-family: 'Source Code Pro', monospace
      font-style: italic
      text-shadow: 1px 1px 3px rgba(black, 0.9)
      font-size: 2.5vw
      // letter-spacing: 0.1vw
      color: white
      code-kw
        color: purple
      code-op
        color: yellow
      code-paren
        color: blue
      code-const
        color: orange
      code-call
        color: green
  div.icon
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    img
      width: 120px
      height: 120px

div.form
  margin: 3em 0
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  width: 100%
  color: lighten(black, 40%)
  > p
    margin: 0
    text-align: center
  > div
    width 90%
    iframe
      border-image-width: 0

div.footer
  margin: 1em 0
  display: flex
  justify-content: center
  width: 100%
  div
    text-align: center
    font-size: 80%
    p
      margin: 0
