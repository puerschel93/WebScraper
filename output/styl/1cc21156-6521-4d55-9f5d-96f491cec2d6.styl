MakeGridHeightsValue( size, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}grid-heights-auto{suffix}
    {
        grid-auto-rows: auto important;
    }

    .{prefix}grid-heights-min{suffix}
    {
        grid-auto-rows: min-content important;
    }

    .{prefix}grid-heights-max{suffix}
    {
        grid-auto-rows: max-content important;
    }

    .{prefix}grid-auto-rows-{size}{unit_name}{suffix}
    {
        grid-auto-rows: size * unit_value important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}grid-auto-rows-{size}{unit_name}-{media_query_name}{suffix}
            {
                grid-auto-rows: size * unit_value important;
            }
        }
    }

// ~~

MakeGridHeightsValueRange( start, step, count, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakeGridHeightsValue( size, unit_value, unit_name, media_query_name_array, prefix, suffix, important );
    }

