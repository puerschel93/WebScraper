    .{prefix}grid-columns-{column_count}{suffix}
    {
        -ms-grid-columns: ( 1fr )[ column_count ] important;
        grid-template-columns: repeat( column_count, 1fr ) important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}grid-columns-{column_count}-{media_query_name}{suffix}
            {
                -ms-grid-columns: ( 1fr )[ column_count ] important;
                grid-template-columns: repeat( column_count, 1fr ) important;
            }
        }
    }

