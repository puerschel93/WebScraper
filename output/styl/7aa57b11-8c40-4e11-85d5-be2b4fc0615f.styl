active-color = #1164dd
shadow-color = #273953
.slider-target,.slider-target *
  -webkit-touch-callout none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-user-select none
  touch-action none
  -ms-user-select none
  -moz-user-select none
  user-select none
  box-sizing border-box
.slider-target
  position relative
  margin 10px 0
  width: 100%
.slider-base,.slider-connects
  width 100%
  height 100%
  position relative
  z-index 1
  border-radius 3px
.slider-connects
  overflow hidden
  z-index 0
.slider-connect,.slider-origin
  will-change transform
  position absolute
  z-index 1
  top 0
  right 0
  -ms-transform-origin 0 0
  -webkit-transform-origin 0 0
  -webkit-transform-style preserve-3d
  transform-origin 0 0
  transform-style flat
.slider-connect
  height 100%
  width 100%
  background active-color
  cursor pointer
.slider-origin
  height 10%
  width 10%
.slider-txt-dir-rtl
  &.slider-horizontal
    .slider-origin
      left 0
      right auto
    .slider-handle
      left -8px
      right auto
.slider-vertical
  width 6px
  height 300px
  .slider-origin
    width 0
    & > .slider-tooltip
      transform translateY(-18px)
      top auto
      right 18px
  .slider-handle
    width 16px
    height 16px
    top -8px
    right -6px
  .slider-draggable
    cursor ns-resize
  .slider-tooltip
    transform translateY(-50%)
    top 50%
    right 24px
    &:before
      content ""
      position absolute
      right -10px
      top 50%
      width 0
      height 0
      border 5px solid transparent
      border-left-color inherit
      transform translateY(-50%)
.slider-horizontal
  height 6px
  .slider-origin
    height 0
    & > .slider-tooltip
      transform translate(50%)
      left auto
      bottom 14px
  .slider-handle
    width 16px
    height 16px
    top -6px
    right -8px
  .slider-tooltip
    transform translate(-50%)
    left 50%
    bottom 24px
    &:before
      content ""
      position absolute
      bottom -10px
      left 50%
      width 0
      height 0
      border 5px solid transparent
      border-top-color inherit
      transform translate(-50%)
.slider-handle
  -webkit-backface-visibility hidden
  backface-visibility hidden
  position absolute
  width 16px
  height 16px
  border-radius 50%
  background #fff
  border 0
  right -8px
  box-shadow .5px .5px 2px 1px rgba(0,0,0,.32)
  cursor -webkit-grab
  cursor grab
  &:focus
    outline none
.slider-touch-area
  height 100%
  width 100%
  background #e4e4e4
  border-radius: 100%;
.slider-state-tap .slider-connect,.slider-state-tap .slider-origin
  transition transform .3s
.slider-state-drag
  *
    cursor inherit!important
.slider-base
  background-color shadow-color
.slider-draggable
  cursor ew-resize
.slider-active
  box-shadow .5px .5px 2px 1px rgba(0,0,0,.42)
  cursor -webkit-grabbing
  cursor grabbing
[disabled]
  .slider-connect
    background linear-gradient(272.29deg, #1455b2 0%, #1166e1 100%)//#b8b8b8
  .slider-tooltip
    background linear-gradient(272.29deg, #1455b2 0%, #1166e1 100%)//#b8b8b8
    border-color #b8b8b8
[disabled].slider-handle,[disabled] .slider-handle,[disabled].slider-target
  cursor not-allowed
.slider-tooltip
  font-family Oxygen, sans-serif;
  position absolute
  display block
  font-size 14px
  font-weight bold
  white-space nowrap
  padding 2px 5px
  min-width 20px
  text-align center
  color #fff
  border-radius 5px
  border 1px solid active-color
  background active-color
.slider-pips,.slider-pips *
  box-sizing border-box
.slider-pips
  position absolute
  color #999
.slider-value
  position absolute
  white-space nowrap
  text-align center
.slider-value-sub
  color #ccc
  font-size 10px
.slider-marker
  position absolute
  background #ccc
.slider-marker-large,.slider-marker-sub
  background #aaa
.slider-pips-horizontal
  padding 10px 0
  height 80px
  top 100%
  left 0
  width 100%
.slider-value-horizontal
  transform translate(-50%,50%)
.slider-rtl
  .slider-value-horizontal
    transform translate(50%,50%)
  .slider-value-vertical
    transform translateY(50%)
.slider-marker-horizontal
  &.slider-marker
    margin-left -1px
    width 2px
    height 5px
  &.slider-marker-sub
    height 10px
  &.slider-marker-large
    height 15px
.slider-pips-vertical
  padding 0 10px
  height 100%
  top 0
  left 100%
.slider-value-vertical
  transform translateY(-50%)
  padding-left 25px
.slider-marker-vertical
  &.slider-marker
    width 5px
    height 2px
    margin-top -1px
  &.slider-marker-sub
    width 10px
  &.slider-marker-large
    width 15px
