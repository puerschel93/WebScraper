/***************Terminan fuentes ********************/
/********************Layout Parte 1*************************/
*
	margin 0
	padding 0
	font-family Gandhi
	font-size 16px
	color #18191C
h1,h2,h3,h4,h5,h6
	font-family Circular
body
	background-color #ECEDEC
	.Hbarra
		width 100%
		height 50px
		background-color #152B3C
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-beetwen
		box-sizing border-box
		overflow hidden
		align-items center
		.imagen-logo
			width 50%
			height 100%
			line-height 70px
			padding-left .5em
			box-sizing border-box
			img
				width 200px
    z-index 100
		.menu
			width 50%
			height 100%
			line-height 50px
			text-align right
			box-sizing border-box
			button
        height 100%
        line-height 60px
        width 50px
        background-color #152B3C
        border 0 none
        color #ECEDEC
        i
          color #ECEDEC
          font-size 1.5em
		ul
			width 100%
			background-color #152B3C
			z-index 100
			li
				font-size 1.5em
				width 100%
				list-style none
    display flex
    flex-direction row
    justify-content center
    align-items center
				a
					display block
					padding 1em 0 1em 1em
					width 100%
					color #ECEDEC
					text-decoration none
					box-sizing border-box
					&:hover
						background-color #193449
    #buscar
     background-color transparent
     border 0px none
     i
      color #ECEDEC
    #Btexto
     border 0px none
     border-radius 4px
     font-size .7em
     margin-right 1em
     padding 0
  &-visible
    overflow visible
.footer
  width 100%
  height 50px
  padding .5em 20%
  background-color #152B3C
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-around
  box-sizing border-box
  a
    height 100%
    .soc
      height 100%
      img
        height 100%
/*******************Fin Layout Parte 1*************************/

.cont,.promo
	width 100%
	box-sizing border-box
	.img-g
		width 100%
		height 200px
		margin-top 30px
		position relative
		box-sizing border-box
		&:nth-child(4n+1)
			.titulo
				background-color #E32D40
		&:nth-child(4n+2)
			.titulo
				background-color #59B390
		&:nth-child(4n+3)
			.titulo
				background-color #152B3C
		&:nth-child(4n+4)
			.titulo
				background-color #E47C5D
		.img-p
			width 100%
			height 100%
			display flex
			flex-direction row
			justify-content center
			position absolute
   align-items center
			overflow hidden
			z-index 0
			img
				width 150%
		.titulo
			width 100%
			bottom 20px
			position absolute
			z-index 2
			background-color #E32D40
			h2
				color #ECEDEC
				font-size 1em
				padding .05em 0 .2em .05em
 .buscar
  width 100%
  text-align center
  background-color #E32D40
  h2
   font-size 1.7em
   color #ECEDEC
.todo
 width 100%
 text-align center
 display none
 #todo
  padding .5em 1em
  margin 0 auto
  background-color #152B3C
  color #ECEDEC
  border 0 none
  border-radius 4px
  &:hover
   border-bottom 3px solid #306288
 &-visble
   display block
.suscrib
	width 100%
	padding 30px 1em 0 1em
	box-sizing border-box
	text-align center
	h1
  font-size 1.5em
		margin-top 0
	.correo
		width 100%
  margin 5px 0
		border 2px solid #E32D40
		border-radius 3px
		text-align center
		color #37474F
		background-color #ECEDEC
	.boton
		margin-top 10px
		background-color #59B390
		border 1px solid #59B390
		color #ECEDEC
		font-family Circular
		padding .5em
		border-radius 3px
.conocer
    width 100%
    overflow hide
    position relative
    box-sizing border-box
    background-image url("../img/fondo5.jpg")
    background-size cover
    background-position left
    background-repeat no-repeat
    .imagen-fondo
      width 100%
      text-align center
      overflow hide
      box-sizing border-box
      position absolute
      img
        width 100%
    .inner
      padding 50px 0px
      display flex
      flex-wrap wrap
      justify-content space-around
      align-items center
      a
        text-decoration none
        .liga
          background-color #E47C5D
          border-radius 10px
          text-align center
          padding .5em 1em
          color #ECEDEC
          i
            color #ECEDEC
      .logoCon
        width 40%
        img
          width 100%
    .triangulo1
      width 100%
      height 50px
      position absolute
      bottom 0px
      path
        fill #ECEDEC
        stroke #ECEDEC
        stroke-width 0
    .triangulo
      width 100%
      height 50px
      position absolute
      path
        fill #ECEDEC
        stroke #ECEDEC
        stroke-width 0
.articulo
  width 100%
  text-align center
  box-sizing border-box
  .ImgArt
    width 100%
    img
      width 100%
  .TitArt
    width 100%
    text-align center
    h1
      font-size 1.3em
      padding 0 .5em
      color #ECEDEC
      margin 0
  .Autor
    width 100%
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    align-items center
    .ImgAut
      height 50px
      img
        height 100%
  p, ul
    text-align justify
    line-height 35px
    font-size 1.1em
    padding 0 .7em
    margin 1em auto
    li
     list-style circle
     text-align justify
     margin-left 20px
     font-size 1em

  .videoYTB
    width 100%
    margin 0 auto
    box-sizing border-box
    .cont-video
      position relative
      width 100%
      padding 25%
      margin auto
      box-sizing border-box
      video, object, embed, iframe
        position absolute
        top 0
        left 0
        width 100%
        height 100%
  .spotify
    width 100%
    text-align center
    box-sizing border-box

