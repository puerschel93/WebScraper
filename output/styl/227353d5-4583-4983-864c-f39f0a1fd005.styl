/** CSS PARA FILTROS */
.q-menu-fix .q-field__control {
  // height: 40px;
}
.q-menu-fix {
  z-index: 1 !important;
  border-radius: 0px 0px 4px 4px !important;
  box-shadow:  0px 5px 5px 0px grey !important;
  overflow-x: hidden;
  max-width: inherit !important;
}
.q-field--standout .q-field__control:before {
  opacity: 1;
  transition: none !important;
}
.q-field--standout .q-field__control:hover {
  opacity: 1;
}
.popupOpened .q-field__control {
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.popupOpened .q-field__control:before {
  background: white !important;
  opacity: 1;
  transition: none !important;
  box-shadow: 0px 1px 5px 0px grey !important;
}
.popupOpened .q-field__control:hover {
  opacity: 1;
  transition: none !important;
}
.filter-label .q-avatar__content {
  font-size: 0.4em;
}
.filter-chip__text {
  text-overflow: ellipsis;
  max-width: 250px;
  white-space: nowrap;
  overflow: hidden;
}
.filter__icon {
  border-radius: 50%;
  width: 30px;
  height: 30px;
  transition: background-color 200ms linear;
}
.filter__icon:hover {
  background-color: $grey-4;
}
.filter.q-field--standout .q-field__control {
  transition: all 0.5s ease-out;
  background-color: #e2e2e2;
}
.filter.q-field--standout .q-field__control:focus,
.filter.popupOpened.q-field--standout .q-field__control {
  background-color: white !important;
}
.filter.q-field--standout .q-field__control:before {
  background-color: transparent !important;
}
