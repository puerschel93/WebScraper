.loginHorus__bg {
  background: linear-gradient(-45deg, #5e35b1, #1565c0);
	background-size: 400% 400%;
  animation: loginHorus 5s ease infinite;
}

@keyframes loginHorus {
  0% {
		background-position: 0% 50%
	}
  25% {
		background-position: 50% 50%
	}
	50% {
		background-position: 100% 50%
	}
  75% {
		background-position: 50% 50%
	}
	100% {
		background-position: 0% 50%
	}
}


